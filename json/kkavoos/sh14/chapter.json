{
  "id": "504c793c-92d3-4b13-a407-f351ed3c5091",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "329d71ca-3e51-487f-94a2-1c9d94b6d9f1",
      "m1": "چو نامه به مهر اندر آورد شاه",
      "m2": "جهانجوی رستم بپیموده راه",
      "verse_number": 1
    },
    {
      "id": "f123fe45-bc9a-4d04-b6f6-06044299be74",
      "m1": "به زین اندر افگند گرز گران",
      "m2": "چو آمد به نزدیک مازندران",
      "verse_number": 2
    },
    {
      "id": "1bf4a3bf-d114-4e43-9a62-2fc5368e0041",
      "m1": "به شاه آگهی شد که کاووس کی",
      "m2": "فرستادن نامه افگند پی",
      "verse_number": 3
    },
    {
      "id": "1a422477-10f4-4dae-abf3-f1cdbd4c0b08",
      "m1": "فرستادهای چون هژبر دژم",
      "m2": "کمندی به فتراک بر شست خم",
      "verse_number": 4
    },
    {
      "id": "564477cb-b296-44bb-b942-94f7b92cf28e",
      "m1": "به زیر اندرون بارهای گامزن",
      "m2": "یکی ژنده پیلست گویی به تن",
      "verse_number": 5
    },
    {
      "id": "c760de8d-a970-40c1-9868-928beaef2814",
      "m1": "چو بشنید سالار مازندران",
      "m2": "ز گردان گزین کرد چندی سران",
      "verse_number": 6
    },
    {
      "id": "b7eb564d-fe7d-443b-b09e-2e8bdb0e8c93",
      "m1": "بفرمودشان تا چَپیره شدند",
      "m2": "هژبر ژیان را پذیره شدند",
      "verse_number": 7
    },
    {
      "id": "199c18f1-59ad-4b62-8b6c-50da3cd37269",
      "m1": "چو چشم تهمتن بدیشان رسید",
      "m2": "به ره بر درختی گشن شاخ دید",
      "verse_number": 8
    },
    {
      "id": "e475952a-8796-4f92-9203-a2efa11aa260",
      "m1": "بکند و چو ژوپین به کف برگرفت",
      "m2": "بماندند لشکر همه در شگفت",
      "verse_number": 9
    },
    {
      "id": "b187ebd2-96cc-41ef-abc2-621de7d5ed33",
      "m1": "بینداخت چون نزد ایشان رسید",
      "m2": "سواران بسی زیر شاخ آورید",
      "verse_number": 10
    },
    {
      "id": "b7393db1-1011-4f6e-964b-1c788cce5db9",
      "m1": "یکی دست بگرفت و بفشاردش",
      "m2": "همی آزمون را بیازاردش",
      "verse_number": 11
    },
    {
      "id": "8b0ca66c-dfb6-48d9-bb12-6e99949708d2",
      "m1": "بخندید ازو رستم پیلتن",
      "m2": "شده خیره زو چشم آن انجمن",
      "verse_number": 12
    },
    {
      "id": "bd50e943-4e82-453f-92ec-a6a1be969451",
      "m1": "بدان خنده اندر بیفشارد چنگ",
      "m2": "ببردش رگ از دست وز روی رنگ",
      "verse_number": 13
    },
    {
      "id": "fbb5c108-7a6d-4c6f-aac2-1de1ba7d975a",
      "m1": "بشد هوش از آن مرد رزم آزمای",
      "m2": "ز بالای اسب اندر آمد به پای",
      "verse_number": 14
    },
    {
      "id": "b8709583-8d22-4dac-8fb5-40df24a91c96",
      "m1": "یکی شد بر شاه مازندران",
      "m2": "بگفت آنچ دید از کران تا کران",
      "verse_number": 15
    },
    {
      "id": "4a809c26-2a41-48dd-9d79-66a239207475",
      "m1": "سواری که نامش کلاهور بود",
      "m2": "که مازندران زو پر از شور بود",
      "verse_number": 16
    },
    {
      "id": "981ac39d-8085-4b5d-8dfa-1a5eb4abbbad",
      "m1": "بسان پلنگ ژیان بد به خوی",
      "m2": "نکردی به جز جنگ چیز آرزوی",
      "verse_number": 17
    },
    {
      "id": "c67bdc91-873a-46ca-af56-1bfd8523fbee",
      "m1": "پذیره شدن را فرا پیش خواند",
      "m2": "به مردیش بر چرخ گردان نشاند",
      "verse_number": 18
    },
    {
      "id": "4c9532ef-ef67-451f-9a07-cfe6cd475925",
      "m1": "بدو گفت پیش فرستاده شو",
      "m2": "هنرها پدیدار کن نو به نو",
      "verse_number": 19
    },
    {
      "id": "e305b137-e1c1-4015-84d7-803630be6b50",
      "m1": "چنان کن که گردد رخش پر ز شرم",
      "m2": "به چشم اندر آرد ز شرم آب گرم",
      "verse_number": 20
    },
    {
      "id": "ede10754-ba0c-45c8-9166-a78b7ec1766c",
      "m1": "بیامد کلاهور چون نره شیر",
      "m2": "به پیش جهاندار مرد دلیر",
      "verse_number": 21
    },
    {
      "id": "7682cda5-45fb-4231-8640-738548808b27",
      "m1": "بپرسید پرسیدنی چون پلنگ",
      "m2": "دژم روی زانپس بدو داد چنگ",
      "verse_number": 22
    },
    {
      "id": "226fbe7e-79c1-428a-8893-f3ae0ff8373c",
      "m1": "بیفشارد چنگ سرافراز پیل",
      "m2": "شد از درد دستش به کردار نیل",
      "verse_number": 23
    },
    {
      "id": "51801c34-229c-4561-8f92-a07edea50733",
      "m1": "بپیچید و اندیشه زو دورداشت",
      "m2": "به مردی ز خورشید منشور داشت",
      "verse_number": 24
    },
    {
      "id": "3a410361-2021-43a1-8fa8-2984950541ec",
      "m1": "بیفشارد چنگ کلاهور سخت",
      "m2": "فرو ریخت ناخن چو برگ از درخت",
      "verse_number": 25
    },
    {
      "id": "67bcd782-c69b-401b-b996-711c66062fad",
      "m1": "کلاهور با دست آویخته",
      "m2": "پی و پوست و ناخن فروریخته",
      "verse_number": 26
    },
    {
      "id": "90e3ded9-517d-41fb-bed9-8ef0efa99e2f",
      "m1": "بیاورد و بنمود و با شاه گفت",
      "m2": "که بر خویشتن درد نتوان نهفت",
      "verse_number": 27
    },
    {
      "id": "75513236-0d12-439b-bc50-4814f84cdc83",
      "m1": "ترا آشتی بهتر آید ز جنگ",
      "m2": "فراخی مکن بر دل خویش تنگ",
      "verse_number": 28
    },
    {
      "id": "ce3c40a0-8939-41de-9383-94accbf00e5c",
      "m1": "ترا با چنین پهلوان تاو نیست",
      "m2": "اگر رام گردد به از ساو نیست",
      "verse_number": 29
    },
    {
      "id": "b1e1f116-33e6-4ab5-8e90-cc106bb89b12",
      "m1": "پذیریم از شهر مازندران",
      "m2": "ببخشیم بر کهتر و مهتران",
      "verse_number": 30
    },
    {
      "id": "66091c42-0d83-4a11-98e2-f034603b04f5",
      "m1": "چنین رنج دشوار آسان کنیم",
      "m2": "به آید که جان را هراسان کنیم",
      "verse_number": 31
    },
    {
      "id": "15a3de23-796c-4b57-b3d8-6ae1dd6cab4b",
      "m1": "تهمتن بیامد هم اندر زمان",
      "m2": "بر شاه برسان شیر ژیان",
      "verse_number": 32
    },
    {
      "id": "75ac0777-9141-4c01-81b6-22c2b4ff1fa5",
      "m1": "نگه کرد و بنشاند اندر خورش",
      "m2": "ز کاووس پرسید و از لشکرش",
      "verse_number": 33
    },
    {
      "id": "09a71b1a-c8f1-40c8-8549-321a94f87eb8",
      "m1": "سخن راند از راه و رنج دراز",
      "m2": "که چون راندی اندر نشیب و فراز",
      "verse_number": 34
    },
    {
      "id": "842899a5-7a88-45c4-bfc8-b64bb75cc0cf",
      "m1": "ازان پس بدو گفت رستم توی",
      "m2": "که داری بر و بازوی پهلوی",
      "verse_number": 35
    },
    {
      "id": "bd57a2aa-8c8a-4b54-a5b7-86142ae17222",
      "m1": "چنین داد پاسخ که من چاکرم",
      "m2": "اگر چاکری را خود اندر خورم",
      "verse_number": 36
    },
    {
      "id": "4b0588ca-cdd4-466f-b156-5d1ccedc920d",
      "m1": "کجا او بود من نیایم به کار",
      "m2": "که او پهلوانست و گرد و سوار",
      "verse_number": 37
    },
    {
      "id": "2fa178fa-ac49-41c5-8c22-d78f2b73a5be",
      "m1": "بدو داد پس نامور نامه را",
      "m2": "پیام جهانجوی خودکامه را",
      "verse_number": 38
    },
    {
      "id": "a347925a-7dcc-4473-95b5-6618041c3b90",
      "m1": "بگفت آنک شمشیر بار آورد",
      "m2": "سر سرکشان در کنار آورد",
      "verse_number": 39
    },
    {
      "id": "e813567f-7dc2-4d90-b20a-f577614fcdf6",
      "m1": "چو پیغام بشنید و نامه بخواند",
      "m2": "دژم گشت و اندر شگفتی بماند",
      "verse_number": 40
    },
    {
      "id": "df2a17a7-aff4-4322-8454-74cd31b653f4",
      "m1": "به رستم چنین گفت کاین جست و جوی",
      "m2": "چه باید همی خیره این گفتوگوی",
      "verse_number": 41
    },
    {
      "id": "d96c99bf-4442-499b-a76f-329982cabd0d",
      "m1": "بگویش که سالار ایران تویی",
      "m2": "اگرچه دل و چنگ شیران تویی",
      "verse_number": 42
    },
    {
      "id": "4909dbdc-efca-473d-9a08-b62c3ff109fe",
      "m1": "منم شاه مازندران با سپاه",
      "m2": "بر اورنگ زرین و بر سر کلاه",
      "verse_number": 43
    },
    {
      "id": "a04fd613-4edf-4672-9b1e-3b4ef961114b",
      "m1": "مرا بیهده خواندن پیش خویش",
      "m2": "نه رسم کیان بد نه آیین پیش",
      "verse_number": 44
    },
    {
      "id": "0421f27f-6ed1-4a47-972c-d633f1c8ded4",
      "m1": "براندیش و تخت بزرگان مجوی",
      "m2": "کزین برتری خواری آید بروی",
      "verse_number": 45
    },
    {
      "id": "c18caa43-a923-4c47-8fb5-def03d45e8dc",
      "m1": "سوی گاه ایران بگردان عنان",
      "m2": "وگرنه زمانت سرآرد سنان",
      "verse_number": 46
    },
    {
      "id": "f8a7d464-1d12-4c97-959a-2c9684174572",
      "m1": "اگر با سپه من بجنبم ز جای",
      "m2": "تو پیدا نبینی سرت را ز پای",
      "verse_number": 47
    },
    {
      "id": "d57d9839-b6f0-402a-a719-8d050aa86809",
      "m1": "تو افتادهای بیگمان در گمان",
      "m2": "یکی راه برگیر و بفگن کمان",
      "verse_number": 48
    },
    {
      "id": "cc291f24-32c3-481b-8af0-1bb2de4d8db5",
      "m1": "چو من تنگ روی اندر آرم بروی",
      "m2": "سرآید شما را همه گفتوگوی",
      "verse_number": 49
    },
    {
      "id": "a2262547-d3d7-46ee-9294-312a214ecfa3",
      "m1": "نگه کرد رستم به روشن روان",
      "m2": "به شاه و سپاه و رد و پهلوان",
      "verse_number": 50
    },
    {
      "id": "ed5f86d1-7239-45b4-9036-da293f138b0a",
      "m1": "نیامدش با مغز گفتار اوی",
      "m2": "سرش تیزتر شد به پیکار اوی",
      "verse_number": 51
    },
    {
      "id": "86b246c9-97f4-4c86-8fac-e47aed6439cf",
      "m1": "تهمتن چو برخاست کاید به راه",
      "m2": "بفرمود تا خلعت آرند شاه",
      "verse_number": 52
    },
    {
      "id": "832e1e46-ab57-41d7-934c-f472e0f5a094",
      "m1": "نپذرفت ازو جامه و اسپ و زر",
      "m2": "که ننگ آمدش زان کلاه و کمر",
      "verse_number": 53
    },
    {
      "id": "04684442-6f84-48f6-90d8-8026defb9736",
      "m1": "بیامد دژم از بر گاه اوی",
      "m2": "همه تیره دید اختر و ماه اوی",
      "verse_number": 54
    },
    {
      "id": "25927446-f065-4feb-88eb-a6fe72adef1b",
      "m1": "برون آمد از شهر مازندران",
      "m2": "سرش گشته بد زان سخنها گران",
      "verse_number": 55
    },
    {
      "id": "34803a09-6b0d-4f06-aa31-74f0b1e4c5e3",
      "m1": "چو آمد به نزدیک شاه اندرون",
      "m2": "دل کینهدارش پر از جوش خون",
      "verse_number": 56
    },
    {
      "id": "b0452429-3e76-4b83-8707-77444fa90b8d",
      "m1": "ز مازندران هرچ دید و شنید",
      "m2": "همه کرد بر شاه ایران پدید",
      "verse_number": 57
    },
    {
      "id": "7a2d8979-8893-47a1-8462-eb3000d120fe",
      "m1": "وزان پس ورا گفت مندیش هیچ",
      "m2": "دلیری کن و رزم دیوان بسیچ",
      "verse_number": 58
    },
    {
      "id": "f3afae25-efed-4a41-ab71-453dc505bf47",
      "m1": "دلیران و گردان آن انجمن",
      "m2": "چنان دان که خوارند بر چشم من",
      "verse_number": 59
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 59
  },
