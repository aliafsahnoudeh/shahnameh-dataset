{
  "id": "f2836c89-95df-481c-9b5e-a92ac097ce0b",
  "title": "بخش ۱۸ - سخن دقیقی",
  "verses": [
    {
      "id": "74c5cf67-61ec-4a40-b33d-0eaac7332b1f",
      "m1": "چو بازآورید آن گرانمایه کین",
      "m2": "بر اسپ زریری برافگند زین",
      "verse_number": 1
    },
    {
      "id": "5cec837f-d2ce-4607-bbd9-5adcf2d930d3",
      "m1": "خرامید تازان به آوردگاه",
      "m2": "به سه بهره کرد آن کیانی سپاه",
      "verse_number": 2
    },
    {
      "id": "94b0c116-5c9a-450d-bdc6-985d68d0515d",
      "m1": "ازان سه یکی را به بستور داد",
      "m2": "دگر آن سپهدار فرخنژاد",
      "verse_number": 3
    },
    {
      "id": "429b960b-51c6-4b9c-b207-d792137a51ea",
      "m1": "دگر بهره را بر برادر سپرد",
      "m2": "بزرگان ایران و مردان گرد",
      "verse_number": 4
    },
    {
      "id": "62f2612b-1cc2-489a-8a36-9f6a160730c2",
      "m1": "سیم بهره را سوی خود بازداشت",
      "m2": "که چون ابر غرنده آواز داشت",
      "verse_number": 5
    },
    {
      "id": "4a70d6ed-25ec-4cf6-8879-67d37f1ac06d",
      "m1": "چو بستور فرخنده و پاک تن",
      "m2": "دگر فرش آورد شمشیر زن",
      "verse_number": 6
    },
    {
      "id": "507a0bfe-3c33-4412-a9ed-2c5a6aaff7d1",
      "m1": "بهم ایستادند از پیش اوی",
      "m2": "که لشکر شکستن بدی کیش اوی",
      "verse_number": 7
    },
    {
      "id": "8fae0680-a376-43c0-b2aa-9790b1b91c35",
      "m1": "همیدون ببستند پیمان برین",
      "m2": "که گر تیغ دشمن بدرد زمین",
      "verse_number": 8
    },
    {
      "id": "49ea4e0a-6e4b-43ac-95a3-a0ec601dfa8d",
      "m1": "نگردیم یک تن ازین جنگ باز",
      "m2": "نداریم زین بدکنان چنگ باز",
      "verse_number": 9
    },
    {
      "id": "4fff19b6-f62b-4143-9540-477ea88aa1a0",
      "m1": "بر اسپان بکردند تنگ استوار",
      "m2": "برفتند یکدل سوی کارزار",
      "verse_number": 10
    },
    {
      "id": "5d6bc407-b5a9-4c87-9c9a-48a4a79d34b7",
      "m1": "چو ایشان فگندند اسپ از میان",
      "m2": "گوان و جوانان ایرانیان",
      "verse_number": 11
    },
    {
      "id": "87aabb53-c1e4-428a-92a7-4332267a1c27",
      "m1": "همه یکسر از جای برخاستند",
      "m2": "جهان را به جوشن بیاراستند",
      "verse_number": 12
    },
    {
      "id": "82586868-53c4-487b-a0f6-67fb6500c3c5",
      "m1": "ازیشان بکشتند چندان سپاه",
      "m2": "کزان تنگ شد جای آوردگاه",
      "verse_number": 13
    },
    {
      "id": "8bbbe4aa-96cf-4c53-9245-e9763d62ff89",
      "m1": "چنان خون همی رفت بر کوه و دشت",
      "m2": "کزان آسیاها به خون بربگشت",
      "verse_number": 14
    },
    {
      "id": "d7f05d61-3bed-484b-9b4f-edb7175ae9a7",
      "m1": "چو ارجاسپ آن دید کامدش پیش",
      "m2": "ابا نامداران و مردان خویش",
      "verse_number": 15
    },
    {
      "id": "aaaccf2f-fdd9-4ba8-b1b9-d9dbfb4c1a2d",
      "m1": "گو گردکش نیزه اندر نهاد",
      "m2": "بران گردگیران یبغو نژاد",
      "verse_number": 16
    },
    {
      "id": "48b06ce8-f4cd-4035-bbad-b2306bc7f431",
      "m1": "همی دوختشان سینهها باز پشت",
      "m2": "چنان تا همه سرکشان را بکشت",
      "verse_number": 17
    },
    {
      "id": "d2158c68-10ce-49ac-b9b7-203d46602f39",
      "m1": "چو دانست خاقان که ماندند بس",
      "m2": "نیارد شدن پیش او هیچکس",
      "verse_number": 18
    },
    {
      "id": "cd7d18d3-45dd-4805-b80c-670c41db0e65",
      "m1": "سپه جنب جنبان شد و کار گشت",
      "m2": "همی بود تا روز اندر گذشت",
      "verse_number": 19
    },
    {
      "id": "8306971c-7002-4364-91c4-8492aa7aefb1",
      "m1": "همانگاه اندر گریغ اوفتاد",
      "m2": "بشد رویش اندر بیابان نهاد",
      "verse_number": 20
    },
    {
      "id": "5ded396d-a9ae-424c-a1b7-d18374e08ba1",
      "m1": "پس اندر نهادند ایرانیان",
      "m2": "بدان بیمره لشکر چینیان",
      "verse_number": 21
    },
    {
      "id": "235ec811-221d-47ca-9a5c-b683ebb3999c",
      "m1": "بکشتند زیشان به هر سو بسی",
      "m2": "نبخشودشان ای شگفتی کسی",
      "verse_number": 22
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 22
  }
}