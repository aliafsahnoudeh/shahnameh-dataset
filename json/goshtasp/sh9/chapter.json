{
  "id": "c9152419-bc50-4f3f-b024-c82b5d6ad9da",
  "title": "بخش ۹ - سخن دقیقی",
  "verses": [
    {
      "id": "92dd104d-f0a5-4edc-a2fd-7b893f313f00",
      "m1": "چو آگاهی آمد به گشتاسپ شاه",
      "m2": "که سالار چین جملگی با سپاه",
      "verse_number": 1
    },
    {
      "id": "5b398c69-642e-4126-8540-18e1c979bde0",
      "m1": "بیاراسته آمد از جای خویش",
      "m2": "خشاش یلش را فرستاد پیش",
      "verse_number": 2
    },
    {
      "id": "9a3285bd-f3b2-4092-a7db-fe847e1b9118",
      "m1": "چو بشنید کو رفت با لشکرش",
      "m2": "که ویران کند آن نکو کشورش",
      "verse_number": 3
    },
    {
      "id": "f0f0c122-1a7d-4257-862c-bed592a5482f",
      "m1": "سپهبدش را گفت فردا پگاه",
      "m2": "بیارای پیل و بیاور سپاه",
      "verse_number": 4
    },
    {
      "id": "36f15776-f698-41a0-94e6-cee56c087581",
      "m1": "سوی مرزدارانش نامه نوشت",
      "m2": "که خاقان ره راد مردی بهشت",
      "verse_number": 5
    },
    {
      "id": "ac2deea3-0670-47ca-9fc0-c1c0f2463f8e",
      "m1": "بیایید یکسر به درگاه من",
      "m2": "که بر مرز بگذشت بد خواه من",
      "verse_number": 6
    },
    {
      "id": "8285a58a-8a82-46f7-b787-2896fcd7732b",
      "m1": "چو نامه سوی راد مردان رسید",
      "m2": "که آمد جهانجوی دشمن پدید",
      "verse_number": 7
    },
    {
      "id": "9f9b555a-2efe-4969-b393-ff5e77410af6",
      "m1": "سپاهی بیامد به درگاه شاه",
      "m2": "که چندان نبد بر زمین بر گیاه",
      "verse_number": 8
    },
    {
      "id": "025a3ba3-59de-4e6f-97d9-e11cf74c13d1",
      "m1": "ز بهر جهانگیر شاه کیان",
      "m2": "ببستند گردان گیتی میان",
      "verse_number": 9
    },
    {
      "id": "f4295cdd-bcfe-4932-940a-1a41bf2dceb8",
      "m1": "به درگاه خسرو نهادند روی",
      "m2": "همه مرزداران به فرمان اوی",
      "verse_number": 10
    },
    {
      "id": "28a2d7e5-1ce2-49c2-ae49-8a33d5f02c9c",
      "m1": "برین برنیامد بسی روزگار",
      "m2": "که گرد از گزیده هزاران هزار",
      "verse_number": 11
    },
    {
      "id": "9267d47d-42df-45bf-b880-4e7f4a3f01e9",
      "m1": "فراز آمده بود مر شاه را",
      "m2": "کی نامدار و نکو خواه را",
      "verse_number": 12
    },
    {
      "id": "f6c1e41b-91be-450b-93ad-860ede8be260",
      "m1": "به لشکرگه آمد سپه را بدید",
      "m2": "که شایسته بد رزم را برگزید",
      "verse_number": 13
    },
    {
      "id": "eab1977e-5d70-4110-8c0d-c83224aeb3f9",
      "m1": "ازان شادمان گشت فرخنده شاه",
      "m2": "دلش خیره آمد زبی مر سپاه",
      "verse_number": 14
    },
    {
      "id": "5a4d452c-967f-41a6-94d4-16b52a8f4597",
      "m1": "دگر روز گشتاسپ با موبدان",
      "m2": "ردان و بزرگان و اسپهبدان",
      "verse_number": 15
    },
    {
      "id": "bedac781-576e-4d2b-b3dd-8f3ce0ffcc37",
      "m1": "گشاد آن در گنج پر کرده جم",
      "m2": "سپه را بداد او دو ساله درم",
      "verse_number": 16
    },
    {
      "id": "3556faca-cc39-48c8-a535-5e8d4d5e0566",
      "m1": "چو روزی ببخشید و جوشن بداد",
      "m2": "بزد نای و کوس و بنه بر نهاد",
      "verse_number": 17
    },
    {
      "id": "9647364f-b34c-49ba-9d18-4130a4419026",
      "m1": "بفرمود بردن ز پیش سپاه",
      "m2": "درفش همایون فرخنده شاه",
      "verse_number": 18
    },
    {
      "id": "4274bb8e-a8a3-405a-a15e-7e1a470973cf",
      "m1": "سوی رزم ارجاسپ لشکر کشید",
      "m2": "سپاهی که هرگز چنان کس ندید",
      "verse_number": 19
    },
    {
      "id": "77fec6ff-e588-4b8e-bb92-253061b5acd8",
      "m1": "ز تاریکی و گرد پای سپاه",
      "m2": "کسی روز روشن ندید ایچ راه",
      "verse_number": 20
    },
    {
      "id": "f8407f1a-d954-40b9-8f89-873d13a1c6b3",
      "m1": "ز بس بانگ اسپان و از بس خروش",
      "m2": "همی نالهٔ کوس نشنید گوش",
      "verse_number": 21
    },
    {
      "id": "1dfe8446-692f-4b35-adeb-9e05c8f9521a",
      "m1": "درفش فراوان برافراشته",
      "m2": "همه نیزهها ز ابر بگذاشته",
      "verse_number": 22
    },
    {
      "id": "0f9e34e8-cb83-4cb5-b1af-d9ad567d1039",
      "m1": "چو رسته درخت از بر کوهسار",
      "m2": "چو بیشه نیستان به وقت بهار",
      "verse_number": 23
    },
    {
      "id": "c4997541-5a93-4022-af43-dc54170349f7",
      "m1": "ازین سان همی رفت گشتاسپ شاه",
      "m2": "ز کشور به کشور همی شد سپاه",
      "verse_number": 24
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 24
  }
}