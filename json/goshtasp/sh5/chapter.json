{
  "id": "eedcc4f1-a6ce-45ef-8d3d-5cdb8d97a00d",
  "title": "بخش ۵ - سخن دقیقی",
  "verses": [
    {
      "id": "da5d8ce3-b15c-4aa0-92ac-7f2041bd77cd",
      "m1": "برین ایستادند ترکان چین",
      "m2": "دو تن نیز کردند زیشان گزین",
      "verse_number": 1
    },
    {
      "id": "ae2ba6a5-9495-4eb2-a549-cf95b5f17be1",
      "m1": "یکی نام او بیدرفش بزرگ",
      "m2": "گوی پیر و جادو ستنبه سترگ",
      "verse_number": 2
    },
    {
      "id": "3bf460d1-3ea2-4226-a04a-fe72a6d16b06",
      "m1": "دگر جادوی نام او نام خواست",
      "m2": "که هرگز دلش جز تباهی نخواست",
      "verse_number": 3
    },
    {
      "id": "47d89f5d-d94f-493c-ba5f-a50e485158d7",
      "m1": "یکی نامه بنوشت خوب و هژیر",
      "m2": "سوی نامور خسرو و دین پذیر",
      "verse_number": 4
    },
    {
      "id": "c7b59175-4761-44e9-a6cc-850d9c11815b",
      "m1": "نوشتش به نام خدای جهان",
      "m2": "شناسندهٔ آشکار و نهان",
      "verse_number": 5
    },
    {
      "id": "9d693e05-7aa5-43ad-bb34-0fd41c7f7a59",
      "m1": "نوشتم یکی نامهای شهریار",
      "m2": "چنانچون بد اندر خور روزگار",
      "verse_number": 6
    },
    {
      "id": "a8fcd672-ac7c-4063-be32-65dc4ed0bc1b",
      "m1": "سوی گرد گشتاسپ شاه زمین",
      "m2": "سزاوار گاه کیان بافرین",
      "verse_number": 7
    },
    {
      "id": "9bab336e-9603-442a-85d2-97e6bdb913f7",
      "m1": "گزین و مهین پور لهراسپ شاه",
      "m2": "خداوند جیش و نگهدار گاه",
      "verse_number": 8
    },
    {
      "id": "508e43a0-721f-4da9-9242-2cc88dd8bf23",
      "m1": "ز ارجاسپ سالار گردان چین",
      "m2": "سوار جهاندیده گرد زمین",
      "verse_number": 9
    },
    {
      "id": "43c5b215-59ea-405f-9b83-4e71ef7be817",
      "m1": "نوشت اندران نامهٔ خسروی",
      "m2": "نکو آفرینی خط یبغوی",
      "verse_number": 10
    },
    {
      "id": "a8faaac6-7563-4b6e-85a3-29440940c23f",
      "m1": "که ای نامور شهریار جهان",
      "m2": "فروزندهٔ تاج شاهنشهان",
      "verse_number": 11
    },
    {
      "id": "48751dfc-c9c1-4078-a51d-54f7a94c8b37",
      "m1": "سرت سبز باد و تن و جان درست",
      "m2": "مبادت کیانی کمرگاه سست",
      "verse_number": 12
    },
    {
      "id": "6562a4e1-46a8-4aaf-b073-ea4f089e75a9",
      "m1": "شنیدم که راهی گرفتی تباه",
      "m2": "مرا روز روشن بکردی سیاه",
      "verse_number": 13
    },
    {
      "id": "9f4177ba-1bc1-4259-a62d-3b902228f796",
      "m1": "بیامد یکی پیر مهتر فریب",
      "m2": "ترا دل پر از بیم کرد و نهیب",
      "verse_number": 14
    },
    {
      "id": "a04f9fb5-4924-46b9-8296-572c9dcff5aa",
      "m1": "سخن گفتش از دوزخ و از بهشت",
      "m2": "به دلت اندرون هیچ شادی نهشت",
      "verse_number": 15
    },
    {
      "id": "ea325fba-a3c1-435f-87e3-c7ec15e052aa",
      "m1": "تو او را پذیرفتی و دینش را",
      "m2": "بیاراستی راه و آیینش را",
      "verse_number": 16
    },
    {
      "id": "a3f1296e-7c09-4fc6-954b-0ff1d06755d2",
      "m1": "برافگندی آیین شاهان خویش",
      "m2": "بزرگان گیتی که بودند پیش",
      "verse_number": 17
    },
    {
      "id": "adc16fac-fa79-4d9d-a1d0-ffe462253e84",
      "m1": "رها کردی آن پهلوی کیش را",
      "m2": "چرا ننگریدی پس و پیش را",
      "verse_number": 18
    },
    {
      "id": "6277d12c-cc9e-4618-a325-bc5f5221c46e",
      "m1": "تو فرزند آنی که فرخنده شاه",
      "m2": "بدو داد تاج از میان سپاه",
      "verse_number": 19
    },
    {
      "id": "187d0497-9890-4bd5-a206-4e19eb177bd5",
      "m1": "ورا برگزید از گزینان خویش",
      "m2": "ز جمشیدیان مر ترا داشت پیش",
      "verse_number": 20
    },
    {
      "id": "ed9e30d3-883c-4c88-af43-4af4e2a59979",
      "m1": "بران سان که کیخسرو کینهجوی",
      "m2": "ترا بیش بود از کیان آبروی",
      "verse_number": 21
    },
    {
      "id": "a38cdc89-1678-47b0-9e25-c7d5dc7dc51f",
      "m1": "بزرگی و شاهی و فرخندگی",
      "m2": "توانایی و فر و زیبندگی",
      "verse_number": 22
    },
    {
      "id": "b3f93ec6-ff39-403d-9aaa-26c2230ee00d",
      "m1": "درفشان و پیلان آراسته",
      "m2": "بسی لشکر و گنج و بس خواسته",
      "verse_number": 23
    },
    {
      "id": "71e1392c-3a90-4aab-aa25-d10e2e3afb6b",
      "m1": "همی بودت ای مهتر شهریار",
      "m2": "همه مهتران مر ترا دوستدار",
      "verse_number": 24
    },
    {
      "id": "87abdcfe-7dd5-4f73-8d30-eef0f689a03c",
      "m1": "همی تافتی بر جهان یکسره",
      "m2": "چو اردیبهشت آفتاب از بره",
      "verse_number": 25
    },
    {
      "id": "fab1d15a-0006-478f-a43c-8459f3e3100c",
      "m1": "زگیتی ترا برگزیده خدای",
      "m2": "مهانت همه پیش بوده به پای",
      "verse_number": 26
    },
    {
      "id": "cdd3314f-6749-4019-a9bd-57b2119ee0f5",
      "m1": "نکردی خدای جهان را سپاس",
      "m2": "نبودی بدین ره ورا حق شناس",
      "verse_number": 27
    },
    {
      "id": "61df214d-bcdc-4aab-a55b-fd89f1663e8d",
      "m1": "ازان پس که ایزد ترا شاه کرد",
      "m2": "یکی پیر جادوت بی راه کرد",
      "verse_number": 28
    },
    {
      "id": "d472c981-66fb-4391-b9d6-f964c5be37fd",
      "m1": "چو آگاهی تو سوی من رسید",
      "m2": "به روز سپیدم ستاره بدید",
      "verse_number": 29
    },
    {
      "id": "65face8d-95ff-43e7-8857-99a88be46c2d",
      "m1": "نوشتم یکی نامهٔ دوست وار",
      "m2": "که هم دوست بودیم و هم نیک یار",
      "verse_number": 30
    },
    {
      "id": "b572dcbb-631d-4b3f-a2b7-dcdc3b72ecd2",
      "m1": "چو نامه بخوانی سر و تن بشوی",
      "m2": "فریبنده را نیز منمای روی",
      "verse_number": 31
    },
    {
      "id": "82d1bf30-299a-4f47-95c6-245a38e83dea",
      "m1": "مران بند را از میان باز کن",
      "m2": "به شادی می روشن آغاز کن",
      "verse_number": 32
    },
    {
      "id": "2c226271-1968-4ff7-b9cd-5a8459f5570f",
      "m1": "گرایدونک بپذیری از من تو پند",
      "m2": "ز ترکان ترا نیز ناید گزند",
      "verse_number": 33
    },
    {
      "id": "3a125531-fda9-4d39-90d2-a0adc005026c",
      "m1": "زمین کشانی و ترکان چین",
      "m2": "ترا باشد این همچو ایران زمین",
      "verse_number": 34
    },
    {
      "id": "6571ae64-6a0f-4479-ba8a-ba0f53614cd4",
      "m1": "به تو بخشم این بیکران گنجها",
      "m2": "که آوردهام گرد با رنجها",
      "verse_number": 35
    },
    {
      "id": "6be4f117-258d-44c4-99fc-e325f29b22f1",
      "m1": "نکورنگ اسپان با سیم و زر",
      "m2": "به استامها در نشانده گهر",
      "verse_number": 36
    },
    {
      "id": "eb1a32a8-eac4-44ad-8094-529f9d012d13",
      "m1": "غلامان فرستمت با خواسته",
      "m2": "نگاران با جعد آراسته",
      "verse_number": 37
    },
    {
      "id": "63c2af51-0d92-4eb3-a3aa-37d2fd8c5ed9",
      "m1": "و ایدونک نپذیری این پند من",
      "m2": "ببینی گران آهنین بند من",
      "verse_number": 38
    },
    {
      "id": "74cbabac-275b-429d-81da-0247bcc98c93",
      "m1": "بیایم پس نامه تا چندگاه",
      "m2": "کنم کشورت را سراسر تباه",
      "verse_number": 39
    },
    {
      "id": "6e201668-7473-475f-af87-f30b8d81f489",
      "m1": "سپاهی بیارم ز ترکان چین",
      "m2": "که بنگاهشان بر نتابد زمین",
      "verse_number": 40
    },
    {
      "id": "0a7789ed-f02e-4c13-97d3-6b13d4044065",
      "m1": "بینبارم این رود جیحون به مشک",
      "m2": "به مشک آب دریا کنم پاک خشک",
      "verse_number": 41
    },
    {
      "id": "4fbca2ec-2b4e-4109-b5c5-7596fb6143bc",
      "m1": "بسوزم نگاریده کاخ ترا",
      "m2": "ز بن برکنم بیخ و شاخ ترا",
      "verse_number": 42
    },
    {
      "id": "75b16497-aa6d-454f-a7cc-2cf095f49169",
      "m1": "زمین را سراسر بسوزم همه",
      "m2": "کتفتان به ناوک بدوزم همه",
      "verse_number": 43
    },
    {
      "id": "3e1732d5-d233-4496-a3fd-19224710b1aa",
      "m1": "ز ایرانیان هرچ مردست پیر",
      "m2": "کشان بنده کردن نباشد هژیر",
      "verse_number": 44
    },
    {
      "id": "27dbef9a-33b4-464b-a490-446c19e8a2a8",
      "m1": "ازیشان نیابی فزونی بها",
      "m2": "کنمشان همه سر ز گردن جدا",
      "verse_number": 45
    },
    {
      "id": "1d00b88b-92ec-46ea-9465-0cd25db7cf2c",
      "m1": "زن و کودکانشان بیارم ز پیش",
      "m2": "کنمشان همه بندهٔ شهر خویش",
      "verse_number": 46
    },
    {
      "id": "aabd950a-e61f-4bcf-b6bb-25c1807a1bae",
      "m1": "زمینشان همه پاک ویران کنم",
      "m2": "درختانش از بیخ و بن برکنم",
      "verse_number": 47
    },
    {
      "id": "1c8e062a-c7fd-43b9-ad6d-0729a3d79b98",
      "m1": "بگفتم همه گفتنی سر بسر",
      "m2": "تو ژرف اندرین پند نامه نگر",
      "verse_number": 48
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 48
  },
  "order_in_parent": 5
}