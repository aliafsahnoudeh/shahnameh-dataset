{
  "id": "59a2222c-e25f-4541-a1a0-82c0a47b582b",
  "title": "بخش ۶ - سخن دقیقی",
  "verses": [
    {
      "id": "83755d84-f7e4-4d59-bc90-78ed3af56f8a",
      "m1": "بپیچید و نامه بکردش نشان",
      "m2": "بدادش بدان هر دو گردنکشان",
      "verse_number": 1
    },
    {
      "id": "a4938ec3-79fc-4345-8550-2b326f5721c7",
      "m1": "بفرمودشان گفت بخرد بوید",
      "m2": "به ایوان او با هم اندر شوید",
      "verse_number": 2
    },
    {
      "id": "508294c1-7c42-441c-8c9e-402e287138eb",
      "m1": "چو او را ببینید بر تخت و گاه",
      "m2": "کنید آن زمان خویشتن را دو تاه",
      "verse_number": 3
    },
    {
      "id": "be6b56b8-e2e3-48c8-b086-04d2ba889afc",
      "m1": "بر آیین شاهان نمازش برید",
      "m2": "بر تاج و بر تخت او مگذرید",
      "verse_number": 4
    },
    {
      "id": "803ebd50-e7b8-4303-af09-6385bd00c9c8",
      "m1": "چو هر دو نشینید در پیش اوی",
      "m2": "سوی تاج تابندهش آرید روی",
      "verse_number": 5
    },
    {
      "id": "55ad96f2-8160-46a1-8788-2ba56758d0e7",
      "m1": "گزارید پیغام فرخش را",
      "m2": "ازو گوش دارید پاسخش را",
      "verse_number": 6
    },
    {
      "id": "bc33fe5c-02c8-4280-8b68-3ac6729105ed",
      "m1": "چو پاسخ ازو سر بسر بشنوید",
      "m2": "زمین را ببوسید و بیرون شوید",
      "verse_number": 7
    },
    {
      "id": "f2644020-e7ad-4e81-bf48-7ebf1dc4a300",
      "m1": "چو از پیش او کینهور بیدرفش",
      "m2": "سوی بلخ بامی کشیدش درفش",
      "verse_number": 8
    },
    {
      "id": "5a01dfcf-bc1e-41b0-9782-3aa4fef2fad4",
      "m1": "ابا یار خود خیره سر نام خواست",
      "m2": "که او بفگند آن نکو راه راست",
      "verse_number": 9
    },
    {
      "id": "a037e94a-4981-4cfb-9ac7-e90233d4713c",
      "m1": "چو از شهر توران به بلخ آمدند",
      "m2": "به درگاه او بر پیاده شدند",
      "verse_number": 10
    },
    {
      "id": "3fe95f64-fdfd-4b64-94ac-148a9e4cc732",
      "m1": "پیاده برفتند تا پیش اوی",
      "m2": "براین آستانه نهادند روی",
      "verse_number": 11
    },
    {
      "id": "5254dba1-0931-41b5-96fb-af6f3b2d7ab8",
      "m1": "چو رویش بدیدند بر گاه بر",
      "m2": "چو خورشید و تیر از بر ماه بر",
      "verse_number": 12
    },
    {
      "id": "a09d2766-8ffb-412b-9da3-d4a91cdeabe7",
      "m1": "نیایش نمودند چون بندگان",
      "m2": "به پیش گزین شاه فرخندگان",
      "verse_number": 13
    },
    {
      "id": "0bf882e3-2d99-406a-a5c4-7b9c79ea1a40",
      "m1": "بدادندش آن نامهٔ خسروی",
      "m2": "نوشته درو بر خط یبغوی",
      "verse_number": 14
    },
    {
      "id": "e4db445e-9904-406c-b5c8-d09fa6185356",
      "m1": "چو شاه جهان نامه را باز کرد",
      "m2": "برآشفت و پیچیدن آغاز کرد",
      "verse_number": 15
    },
    {
      "id": "ba343a9d-6393-4af2-a5e4-78353f6326fe",
      "m1": "بخواند آن زمان پیر جاماسپ را",
      "m2": "کجا راهبر بود گشتاسپ را",
      "verse_number": 16
    },
    {
      "id": "76b19e89-f58c-475a-9d0b-e95a893c3134",
      "m1": "گزینان ایران و اسپهبدان",
      "m2": "گوان جهان دیده و موبدان",
      "verse_number": 17
    },
    {
      "id": "b95aaf52-d2db-41a0-917a-75ce277a8e5d",
      "m1": "بخواند آن همه آذران پیش خویش",
      "m2": "بیاورد استا و بنهاد پیش",
      "verse_number": 18
    },
    {
      "id": "7fa8fb93-eadf-4358-88c1-82dd07e9bfca",
      "m1": "پیمبرش را خواند و موبدش را",
      "m2": "زریر گزیده سپهبدش را",
      "verse_number": 19
    },
    {
      "id": "851360d5-fee7-4d18-9976-e7b64422fa27",
      "m1": "زریر سپهبد برادرش بود",
      "m2": "که سالار گردان لشکرش بود",
      "verse_number": 20
    },
    {
      "id": "9d149c91-8b28-45a5-a66b-5dd8ade1ce10",
      "m1": "جهان پهلوان بود آن روزگار",
      "m2": "که کودک بد اسفندیار سوار",
      "verse_number": 21
    },
    {
      "id": "e260160e-ab5c-4008-a999-1d2732b8507c",
      "m1": "پناه سپه بود و پشت سپاه",
      "m2": "سپهدار لشکر نگهدار گاه",
      "verse_number": 22
    },
    {
      "id": "971da586-99fd-4f60-9f8c-6d3f0e1b129a",
      "m1": "جهان از بدی ویژه او داشتی",
      "m2": "به رزم اندرون نیژه او داشتی",
      "verse_number": 23
    },
    {
      "id": "c8cb4d4c-8caa-48ac-998b-ea551935da5e",
      "m1": "جهانجوی گفتا به فرخ زریر",
      "m2": "به فرخنده جاماسپ و پور دلیر",
      "verse_number": 24
    },
    {
      "id": "f63653d9-3760-4a47-a430-ca425426deb5",
      "m1": "که ارجاسپ سالار ترکان چین",
      "m2": "یکی نامه کردست زی من چنین",
      "verse_number": 25
    },
    {
      "id": "7aace725-74a0-4ca4-a374-601e10d1e8f5",
      "m1": "بدیشان نمود آن سخنهای زشت",
      "m2": "که نزدیک او شاه ترکان نوشت",
      "verse_number": 26
    },
    {
      "id": "c786e8d3-8ab5-4e6e-9bae-9028c43e45c4",
      "m1": "چه بینید گفتا بدین اندرون",
      "m2": "چه گویید کاین را سرانجام چون",
      "verse_number": 27
    },
    {
      "id": "4688d3b6-491e-453a-8627-74193c91b0fb",
      "m1": "که ناخوش بود دوستی با کسی",
      "m2": "که مایه ندارد ز دانش بسی",
      "verse_number": 28
    },
    {
      "id": "3fe9a707-d149-4706-8081-b6a99ef5be01",
      "m1": "من از تخمهٔ ایرج پاک زاد",
      "m2": "وی از تخمهٔ تور جادو نژاد",
      "verse_number": 29
    },
    {
      "id": "d546ffe8-81f1-4ac4-8da9-41b414cb340c",
      "m1": "چگونه بود در میان آشتی",
      "m2": "ولیکن مرا بود پنداشتی",
      "verse_number": 30
    },
    {
      "id": "d84cec0f-39e5-4c98-998a-80342b0153f6",
      "m1": "کسی کش بود نام و ماند بسی",
      "m2": "سخن گفت بایدش با هرکسی",
      "verse_number": 31
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 31
  },
