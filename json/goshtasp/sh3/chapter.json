{
  "id": "dd40d96a-2d34-49e2-87d9-0a0e5bc8ff73",
  "title": "بخش ۳ - سخن دقیقی",
  "verses": [
    {
      "id": "554ab85a-ff06-4fa6-beab-1bb2e912d1eb",
      "m1": "چو یک چند سالان برآمد برین",
      "m2": "درختی پدید آمد اندر زمین",
      "verse_number": 1
    },
    {
      "id": "bcbdb3e0-f7ff-4bd8-8dd4-ded45d25966f",
      "m1": "در ایوان گشتاسپ بر سوی کاخ",
      "m2": "درختی گشن بود بسیار شاخ",
      "verse_number": 2
    },
    {
      "id": "ffe0f3aa-ad93-46f3-bf98-2f4def950a96",
      "m1": "همه برگ وی پند و بارش خرد",
      "m2": "کسی کو خرد پرورد کی مرد",
      "verse_number": 3
    },
    {
      "id": "9966d849-875a-4d0f-93cf-f25951aade11",
      "m1": "خجسته پی و نام او زردهشت",
      "m2": "که آهرمن بدکنش را بکشت",
      "verse_number": 4
    },
    {
      "id": "57172793-3546-47c4-90ab-4d6565a5e62b",
      "m1": "به شاه کیان گفت پیغمبرم",
      "m2": "سوی تو خرد رهنمون آورم",
      "verse_number": 5
    },
    {
      "id": "d81c235f-6478-4557-9103-6c494dc09438",
      "m1": "جهان آفرین گفت بپذیر دین",
      "m2": "نگه کن برین آسمان و زمین",
      "verse_number": 6
    },
    {
      "id": "2671db80-ee67-4e35-b5f5-bf63af934593",
      "m1": "که بیخاک و آبش برآوردهام",
      "m2": "نگه کن بدو تاش چون کردهام",
      "verse_number": 7
    },
    {
      "id": "7b904b02-9966-4e69-af3f-48022362e73b",
      "m1": "نگر تا تواند چنین کرد کس",
      "m2": "مگر من که هستم جهاندار و بس",
      "verse_number": 8
    },
    {
      "id": "e27e2f7d-5cb4-4775-b05f-fe6b38d8d0c0",
      "m1": "گر ایدونک دانی که من کردم این",
      "m2": "مرا خواند باید جهانآفرین",
      "verse_number": 9
    },
    {
      "id": "2c33cf0a-72a6-4192-96a8-f11e8a3f7dc8",
      "m1": "ز گوینده بپذیر به دین اوی",
      "m2": "بیاموز ازو راه و آیین اوی",
      "verse_number": 10
    },
    {
      "id": "885f5a4d-c004-4189-8efd-970dba698822",
      "m1": "نگر تا چه گوید بران کار کن",
      "m2": "خرد برگزین این جهان خوار کن",
      "verse_number": 11
    },
    {
      "id": "d309d549-1e48-47bf-8671-0fe71ceabc5c",
      "m1": "بیاموز آیین و دین بهی",
      "m2": "که بیدین ناخوب باشد مهی",
      "verse_number": 12
    },
    {
      "id": "25f15deb-74ce-45ce-ab3d-1d1360008112",
      "m1": "چو بشنید ازو شاه به دین به",
      "m2": "پذیرفت ازو راه و آیین به",
      "verse_number": 13
    },
    {
      "id": "d6a76a21-fe3b-402f-98d3-696a15ef9d4f",
      "m1": "نبرده برادرش فرخ زریر",
      "m2": "کجا ژنده پیل آوریدی به زیر",
      "verse_number": 14
    },
    {
      "id": "8490b031-cca5-4aee-a485-c18e417af744",
      "m1": "ز شاهان شه پیر گشته به بلخ",
      "m2": "جهان بر دل ریش او گشته تلخ",
      "verse_number": 15
    },
    {
      "id": "44c8981f-47b1-4345-b4ae-20af0565c724",
      "m1": "شده زار و بیمار و بیهوش و توش",
      "m2": "به نزدیک او زهر مانند نوش",
      "verse_number": 16
    },
    {
      "id": "cb2f474b-6ccb-4542-83a7-5d29b6e92e66",
      "m1": "سران و بزرگان و هر مهتران",
      "m2": "پزشکان دانا و ناموران",
      "verse_number": 17
    },
    {
      "id": "60dc1595-2af2-44f5-ae99-80de62b452a3",
      "m1": "بر آن جادوی چارها ساختند",
      "m2": "نه سود آمد از هرچ انداختند",
      "verse_number": 18
    },
    {
      "id": "add35866-ac00-411e-af84-231697b3c04e",
      "m1": "پس این زردهشت پیمبرش گفت",
      "m2": "کزو دین ایزد نشاید نهفت",
      "verse_number": 19
    },
    {
      "id": "6aae7afe-d099-427e-9e28-a8605e2e59f8",
      "m1": "که چون دین پذیرد ز روز نخست",
      "m2": "شود رسته از درد و گردد درست",
      "verse_number": 20
    },
    {
      "id": "795d344a-267d-4ef0-ac6f-b2a27afdb293",
      "m1": "شهنشاه و زین پس زریر سوار",
      "m2": "همه دین پذیرنده از شهریار",
      "verse_number": 21
    },
    {
      "id": "65ed0a35-083e-4994-a5a1-3340ef78092e",
      "m1": "همه سوی شاه زمین آمدند",
      "m2": "ببستند کشتی به دین آمدند",
      "verse_number": 22
    },
    {
      "id": "c130b49f-8025-4d14-a44d-0da145dd081c",
      "m1": "پدید آمد آن فره ایزدی",
      "m2": "برفت از دل بد سگالان بدی",
      "verse_number": 23
    },
    {
      "id": "33e88c77-4c74-4993-ac50-c88e275eee9c",
      "m1": "پر از نور مینو ببد دخمهها",
      "m2": "وز آلودگی پاک شد تخمهها",
      "verse_number": 24
    },
    {
      "id": "322e0b72-7d3e-4ecd-8435-b6718c379924",
      "m1": "پس آزاده گشتاسپ برشد به گاه",
      "m2": "فرستاد هرسو به کشور سپاه",
      "verse_number": 25
    },
    {
      "id": "b25284d1-aa8c-4525-8b57-0209c3fa4569",
      "m1": "پراگنده اندر جهان موبدان",
      "m2": "نهاد از بر آذران گنبدان",
      "verse_number": 26
    },
    {
      "id": "e1b04961-9664-49a0-af77-0511f1ba3304",
      "m1": "نخست آذر مهربرزین نهاد",
      "m2": "به کشمر نگر تا چه آیین نهاد",
      "verse_number": 27
    },
    {
      "id": "7b334687-b352-41b6-b637-542015e11034",
      "m1": "یکی سرو آزاده بود از بهشت",
      "m2": "به پیش در آذر آن را بکشت",
      "verse_number": 28
    },
    {
      "id": "eaa65a70-40bf-412d-91d6-00082b80706d",
      "m1": "نبشتی بر زاد سرو سهی",
      "m2": "که پذرفت گشتاسپ دین بهی",
      "verse_number": 29
    },
    {
      "id": "6e5a9394-36cd-47ae-a171-524e47d4180e",
      "m1": "گوا کرد مر سرو آزاد را",
      "m2": "چنین گستراند خرد داد را",
      "verse_number": 30
    },
    {
      "id": "45e62026-9c7f-48bc-891b-c7116ab1f045",
      "m1": "چو چندی برآمد برین سالیان",
      "m2": "مران سرو استبر گشتش میان",
      "verse_number": 31
    },
    {
      "id": "e12108c3-0a97-4d05-a144-ac0554d2f068",
      "m1": "چنان گشت آزاد سرو بلند",
      "m2": "که برگرد او برنگشتی کمند",
      "verse_number": 32
    },
    {
      "id": "546e0bcf-0f14-4a94-90aa-1ed19126184e",
      "m1": "چو بسیار برگشت و بسیار شاخ",
      "m2": "بکرد از بر او یکی خوب کاخ",
      "verse_number": 33
    },
    {
      "id": "34a63c7c-6da4-4dd6-9634-c72d8603b19a",
      "m1": "چهل رش به بالا و پهنا چهل",
      "m2": "نکرد از بنه اندرو آب و گل",
      "verse_number": 34
    },
    {
      "id": "33d536fb-6482-47fc-84d2-f981ec630c3a",
      "m1": "دو ایوان برآورد از زر پاک",
      "m2": "زمینش ز سیم و ز عنبرش خاک",
      "verse_number": 35
    },
    {
      "id": "8ac639c3-2fc0-4505-bd62-77fae4467e05",
      "m1": "برو بر نگارید جمشید را",
      "m2": "پرستنده مر ماه و خورشید را",
      "verse_number": 36
    },
    {
      "id": "94df6267-29eb-42ec-884b-efaeff4b5310",
      "m1": "فریدونش را نیز با گاوسار",
      "m2": "بفرمود کردن برانجا نگار",
      "verse_number": 37
    },
    {
      "id": "72dc8999-2897-4272-b4de-dac7e14fe13e",
      "m1": "همه مهتران را بر آنجا نگاشت",
      "m2": "نگر تا چنان کامگاری که داشت",
      "verse_number": 38
    },
    {
      "id": "72600fe1-c8b4-4e7f-8a55-4a44494ccb13",
      "m1": "چو نیکو شد آن نامور کاخ زر",
      "m2": "به دیوارها بر نشانده گهر",
      "verse_number": 39
    },
    {
      "id": "0b16e2d9-f173-430e-9c1e-5e338ce968db",
      "m1": "به گردش یکی باره کرد آهنین",
      "m2": "نشست اندرو کرد شاه زمین",
      "verse_number": 40
    },
    {
      "id": "eb6b275b-fd16-4c2b-aa12-91490611b3e2",
      "m1": "فرستاد هرسو به کشور پیام",
      "m2": "که چون سرو کشمر به گیتی کدام",
      "verse_number": 41
    },
    {
      "id": "aa8c5e4d-45e9-4b14-822a-5886a0ac2c39",
      "m1": "ز مینو فرستاد زی من خدای",
      "m2": "مرا گفت زینجا به مینو گرای",
      "verse_number": 42
    },
    {
      "id": "cf62ce21-b675-4619-b776-6f08227af778",
      "m1": "کنون هرک این پند من بشنوید",
      "m2": "پیاده سوی سرو کشمر روید",
      "verse_number": 43
    },
    {
      "id": "9241160c-bd51-44c3-af67-750f7ccf402f",
      "m1": "بگیرید پند ار دهد زردهشت",
      "m2": "به سوی بت چین بدارید پشت",
      "verse_number": 44
    },
    {
      "id": "54af61ab-52a5-4291-ba5b-9405c8c51d3f",
      "m1": "به برز و فر شاه ایرانیان",
      "m2": "ببندید کشتی همه بر میان",
      "verse_number": 45
    },
    {
      "id": "3d273e01-1553-4930-93e9-7e73463d6d48",
      "m1": "در آیین پیشینیان منگرید",
      "m2": "برین سایهٔ سروبن بگذرید",
      "verse_number": 46
    },
    {
      "id": "d8a5bc43-6e24-4b0f-8496-b0345808a319",
      "m1": "سوی گنبد آذر آرید روی",
      "m2": "به فرمان پیغمبر راستگوی",
      "verse_number": 47
    },
    {
      "id": "87cb7023-5d28-4528-be61-f173e246c02e",
      "m1": "پراگنده فرمانش اندر جهان",
      "m2": "سوی نامداران و سوی مهان",
      "verse_number": 48
    },
    {
      "id": "0c811798-f7cc-4a60-9748-83f4aeae28a5",
      "m1": "همه نامداران به فرمان اوی",
      "m2": "سوی سرو کشمر نهادند روی",
      "verse_number": 49
    },
    {
      "id": "a23bf751-97a4-4422-a97f-2234c71f5a99",
      "m1": "پرستشکده گشت زان سان که پشت",
      "m2": "ببست اندرو دیو را زردهشت",
      "verse_number": 50
    },
    {
      "id": "e6be0cde-ed68-4082-b458-3db58d0e274a",
      "m1": "بهشتیش خوان ار ندانی همی",
      "m2": "چرا سرو کشمرش خوانی همی",
      "verse_number": 51
    },
    {
      "id": "eacc16db-b67d-4af0-81a9-db881da65682",
      "m1": "چراکش نخوانی نهال بهشت",
      "m2": "که شاه کیانش به کشمر بکشت",
      "verse_number": 52
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 52
  }
}