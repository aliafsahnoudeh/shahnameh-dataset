{
  "id": "13489cd7-fe74-4aaa-ac46-d3bb398bbe52",
  "title": "بخش ۱۳ - سخن دقیقی",
  "verses": [
    {
      "id": "e9da07bf-0953-49ea-9b30-01453be7232f",
      "m1": "بیامد سر سروران سپاه",
      "m2": "پسر تهم جاماسپ دستور شاه",
      "verse_number": 1
    },
    {
      "id": "3d8aff22-fc47-4a70-9cbf-e3ca38261584",
      "m1": "نبرده سواری گرامیش نام",
      "m2": "به مانندهٔ پور دستان سام",
      "verse_number": 2
    },
    {
      "id": "4ed817e8-d729-4322-9b73-e7980acb8126",
      "m1": "یکی چرمهای برنشسته سمند",
      "m2": "یکی گام زن بارهٔ بیگزند",
      "verse_number": 3
    },
    {
      "id": "38dca676-cc5f-447d-b7e7-e1479a39c6b0",
      "m1": "چمانندهٔ چرمهٔ نونده جوان",
      "m2": "یکی کوه پاره ست گوی روان",
      "verse_number": 4
    },
    {
      "id": "9de8e891-4db8-42fe-8f14-27d3c48faa94",
      "m1": "به پیش صف چینیان ایستاد",
      "m2": "خداوند بهزاد را کرد یاد",
      "verse_number": 5
    },
    {
      "id": "dc6dfa79-c03c-4482-af21-1b0838289117",
      "m1": "کدامست گفت از شما شیردل",
      "m2": "که آید سوی نیزهٔ جان گسل",
      "verse_number": 6
    },
    {
      "id": "3c3ece36-338b-48a0-9fc9-b387dd8e9ed7",
      "m1": "کجا باشد آن جادوی خویش کام",
      "m2": "کجا خواست نام و هزارانش نام",
      "verse_number": 7
    },
    {
      "id": "ce7fe224-61b8-4940-93c9-013494375c08",
      "m1": "برفت آن زمان پیش او نامخواست",
      "m2": "تو گفتی که همچو ستونست راست",
      "verse_number": 8
    },
    {
      "id": "021208dc-6ffe-4e27-a8b1-1d4e94478745",
      "m1": "بگشتند هر دو سوار هژیر",
      "m2": "به گرز و به نیزه به شمشیر و تیر",
      "verse_number": 9
    },
    {
      "id": "6ca4ac41-8ab7-4a99-a09e-19e068f27396",
      "m1": "گرامی گوی بود با زور شیر",
      "m2": "نتابید با او سوار دلیر",
      "verse_number": 10
    },
    {
      "id": "c5294fcd-76e5-4a57-a636-7c578f44de2e",
      "m1": "گرفت از گرامی نبرده گریغ",
      "m2": "گرامی کفش بود برنده تیغ",
      "verse_number": 11
    },
    {
      "id": "5d9be15f-76bb-4c85-879e-3e3e1aca06bd",
      "m1": "گرامی خرامید با خشم تیز",
      "m2": "دل از کینهٔ کشتگان پر ستیز",
      "verse_number": 12
    },
    {
      "id": "aaa851e4-b209-4ba9-880f-87985063d76c",
      "m1": "میان صف دشمن اندر فتاد",
      "m2": "پس از دامن کوه برخاست باد",
      "verse_number": 13
    },
    {
      "id": "f26bc475-dfbd-4800-82af-d27623be626b",
      "m1": "سپاه از دو رو بر هم آویختند",
      "m2": "و گرد از دو لشکر برانگیختند",
      "verse_number": 14
    },
    {
      "id": "e6e71171-9927-4a6d-95ed-8603be28952d",
      "m1": "بدان شورش اندر میان سپاه",
      "m2": "ازان زخم گردان و گرد سیاه",
      "verse_number": 15
    },
    {
      "id": "5ff0f3b0-5f3f-4372-80cb-8202ee90f657",
      "m1": "بیفتاد از دست ایرانیان",
      "m2": "درفش فروزندهٔ کاویان",
      "verse_number": 16
    },
    {
      "id": "71439c6e-d206-43ef-a631-f36f4f984dd1",
      "m1": "گرامی بدید آن درفش چو نیل",
      "m2": "که افگنده بودند از پشت پیل",
      "verse_number": 17
    },
    {
      "id": "a12227ee-18f1-4a4d-a62b-b238222926e6",
      "m1": "فرود آمد و بر گرفت آن ز خاک",
      "m2": "بیفشاند از خاک و بسترد پاک",
      "verse_number": 18
    },
    {
      "id": "b4ef4118-4cac-47e8-8595-d14550399348",
      "m1": "چو او را بدیدند گردان چین",
      "m2": "که آن نیزهٔ نامدار گزین",
      "verse_number": 19
    },
    {
      "id": "425c2deb-1bce-4eb4-b7d1-c485743f19d2",
      "m1": "ازان خاک برداشت  بسترد و برد",
      "m2": "به گردش گرفتند مردان گرد",
      "verse_number": 20
    },
    {
      "id": "78fbb38f-c263-4d69-b448-b99f3d23f6cf",
      "m1": "ز هر سو به گردش همی تاختند",
      "m2": "به شمشیر دستش بینداختند",
      "verse_number": 21
    },
    {
      "id": "312013f6-7e35-4046-8ea4-3eca2aacb3ac",
      "m1": "درفش فریدون به دندان گرفت",
      "m2": "همی زد به یک دست گرز ای شگفت",
      "verse_number": 22
    },
    {
      "id": "15f48a65-1853-493d-b640-2496e97444f3",
      "m1": "سرانجام کارش بکشتند زار",
      "m2": "بران گرم خاکش فگندند خوار",
      "verse_number": 23
    },
    {
      "id": "e9d02e06-3b46-469d-867f-c5856c3cba9d",
      "m1": "دریغ آن نبرده سوار هژبر",
      "m2": "که بازش ندید آن خردمند پیر",
      "verse_number": 24
    },
    {
      "id": "1550e9e1-29c0-4f9c-a78c-28d8c99e86d0",
      "m1": "بیامد هم آنگاه بستور شیر",
      "m2": "نبرده کیان زاده پور زریر",
      "verse_number": 25
    },
    {
      "id": "9edc5c3c-b473-4f93-9269-59b7a7476254",
      "m1": "بکشت او ازان دشمنان بیشمار",
      "m2": "که آویخت اندر بد روزگار",
      "verse_number": 26
    },
    {
      "id": "5157358e-1970-47a1-9cbd-f81fc606d630",
      "m1": "سرانجام برگشت پیروز و شاد",
      "m2": "به پیش پدر باز شد و ایستاد",
      "verse_number": 27
    },
    {
      "id": "4ff9ceab-af6d-4c48-a2ce-3aa66508acd4",
      "m1": "بیامد پس آن برگزیده سوار",
      "m2": "پس شهریار جهان نیوزار",
      "verse_number": 28
    },
    {
      "id": "9308f3bc-9571-4441-a652-f191b7003cbd",
      "m1": "به زیر اندرون تیزرو شولکی",
      "m2": "که نبود چنان از هزاران یکی",
      "verse_number": 29
    },
    {
      "id": "2662556f-9da5-4def-8a23-e67d1b88ebb5",
      "m1": "بیامد بران تیره آوردگاه",
      "m2": "به آواز گفت ای گزیده سپاه",
      "verse_number": 30
    },
    {
      "id": "409ba4d6-5ad3-492b-b713-f5402607d6fe",
      "m1": "کدامست مرد از شما نامدار",
      "m2": "جهاندیده و گرد و نیزهگزار",
      "verse_number": 31
    },
    {
      "id": "cdd63528-7a11-44c4-ad78-11e0a4d5c10e",
      "m1": "که پیش من آیند نیزه به دست",
      "m2": "که امروز در پیش مرد آمدست",
      "verse_number": 32
    },
    {
      "id": "279f1622-f764-40df-a1c8-7df463bd375d",
      "m1": "سواران چین پیش او تاختند",
      "m2": "برافگندنش را همی ساختند",
      "verse_number": 33
    },
    {
      "id": "5eb33253-bd1b-4ae0-9a26-0d135b84d968",
      "m1": "سوار جهانجوی مرد دلیر",
      "m2": "چو پیل دژآگاه و چون نره شیر",
      "verse_number": 34
    },
    {
      "id": "e8f8a2b1-507d-43cc-85c7-171c47666526",
      "m1": "همی گشت بر گرد مردان چین",
      "m2": "تو گفتی همی بر نوردد زمین",
      "verse_number": 35
    },
    {
      "id": "9e144f75-0999-404d-90df-a1aa37299868",
      "m1": "بکشت از گوان جهان شست مرد",
      "m2": "دران تاختنها به گرز نبرد",
      "verse_number": 36
    },
    {
      "id": "10c9426e-7e7b-4112-bae7-47b95cefb068",
      "m1": "سرانجامش آمد یکی تیر چرخ",
      "m2": "چنان آمده بودش از چرخ برخ",
      "verse_number": 37
    },
    {
      "id": "554abba7-a282-4e35-80be-ff465bd84093",
      "m1": "بیفتاد زان شولک خوب رنگ",
      "m2": "بمرد و نرست اینت فرجام جنگ",
      "verse_number": 38
    },
    {
      "id": "30a9e267-b295-44b7-bcf7-6311d7672d3b",
      "m1": "دریغ آن سوار گرانمایه نیز",
      "m2": "که افگنده شد رایگان بر نه چیز",
      "verse_number": 39
    },
    {
      "id": "4a44a186-6aef-4aa5-862d-e29df3ea893c",
      "m1": "که همچون پدر بود و همتای اوی",
      "m2": "دریغ آن نکو روی و بالای اوی",
      "verse_number": 40
    },
    {
      "id": "f584906f-69f6-4b6c-879c-827f0f246d10",
      "m1": "چو کشته شد آن نامبرده سوار",
      "m2": "ز گردان به گردش هزاران هزار",
      "verse_number": 41
    },
    {
      "id": "bf48149c-1dae-425f-9375-f0814b65e5f4",
      "m1": "بهر گوشهای بر هم آویختند",
      "m2": "ز روی زمین گرد انگیختند",
      "verse_number": 42
    },
    {
      "id": "455c489a-68d7-4965-83fa-e6d93966742f",
      "m1": "برآمد برین رزم کردن دو هفت",
      "m2": "کزیشان سواری زمانی نخفت",
      "verse_number": 43
    },
    {
      "id": "4e30b26f-21ea-404c-b699-2e926aca2e5c",
      "m1": "زمینها پر از کشته و خسته شد",
      "m2": "سراپردهها نیز بربسته شد",
      "verse_number": 44
    },
    {
      "id": "06f77311-37fb-4b4d-a446-6ef164dc0c09",
      "m1": "در و دشتها شد همه لالهگون",
      "m2": "به دشت و بیابان همی رفت خون",
      "verse_number": 45
    },
    {
      "id": "0fb668f4-2c12-4fa8-8858-dd342ba8f5eb",
      "m1": "چنان بد ز بس کشته آن رزمگاه",
      "m2": "که بد میتوانست رفتن به راه",
      "verse_number": 46
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 46
  },
