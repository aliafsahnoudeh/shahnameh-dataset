{
  "id": "8865aa14-1f69-4910-ac2d-1af81457a762",
  "title": "بخش ۱۶ - سخن دقیقی",
  "verses": [
    {
      "id": "040749fc-5605-40d6-8f2f-6e5bf153c5c1",
      "m1": "چو اسفندیار آن گو تهمتن",
      "m2": "خداوند اورنگ با سهم و تن",
      "verse_number": 1
    },
    {
      "id": "de38c35f-bc01-47df-aeb4-a8e7da358c5c",
      "m1": "ازان کوه بشنید بانگ پدر",
      "m2": "به زاری به پیش اندر افگند سر",
      "verse_number": 2
    },
    {
      "id": "3f664d4e-771b-40b9-be8f-0e32628e0e52",
      "m1": "خرامیده نیزه به چنگ اندرون",
      "m2": "ز پیش پدر سر فگنده نگون",
      "verse_number": 3
    },
    {
      "id": "ae1463ff-9262-42b4-bf1e-95605971cc87",
      "m1": "یکی دیزهای بر نشسته بلند",
      "m2": "بسان یکی دیو جسته ز بند",
      "verse_number": 4
    },
    {
      "id": "1fcae72a-f383-4625-9d3d-c3e0d6e9ccb8",
      "m1": "بدان لشکر دشمن اندر فتاد",
      "m2": "چنان چون در افتد به گلبرگ باد",
      "verse_number": 5
    },
    {
      "id": "c2029805-a432-4473-9735-af3d3e751dde",
      "m1": "همی کشت ازیشان و سر میبرید",
      "m2": "ز بیمش همی مرد هرکش بدید",
      "verse_number": 6
    },
    {
      "id": "93a8a356-8bc8-4c4b-a127-0d16d17b10a2",
      "m1": "چو بستور پور زریر سوار",
      "m2": "ز خیمه خرامید زی اسپدار",
      "verse_number": 7
    },
    {
      "id": "a5d4d725-7d7d-41a0-ba16-dda5fa657711",
      "m1": "یکی اسپ آسودهٔ تیزرو",
      "m2": "جهنده یکی بود آگنده خو",
      "verse_number": 8
    },
    {
      "id": "194e850c-8de1-45dc-aa1b-d4cd991f3c39",
      "m1": "طلب کرد از اسپدار پدر",
      "m2": "نهاد از بر او یکی زین زر",
      "verse_number": 9
    },
    {
      "id": "e5ddcda0-2a86-48f9-ada4-d7ec8c54018d",
      "m1": "بیاراست و برگستوران برفگند",
      "m2": "به فتراک بر بست پیچان کمند",
      "verse_number": 10
    },
    {
      "id": "56cf6308-ac1b-4fda-b3e4-a3487552ec07",
      "m1": "بپوشید جوشن بدو بر نشست",
      "m2": "ز پنهان خرامید نیزه به دست",
      "verse_number": 11
    },
    {
      "id": "6e20b378-3054-4c7c-ad41-905ca2161d2a",
      "m1": "ازین سان خرامید تا رزمگاه",
      "m2": "سوی باب کشته بپیمود راه",
      "verse_number": 12
    },
    {
      "id": "2c4ae6ab-13bb-474a-9dba-20c148d15176",
      "m1": "همی تاخت آن بارهٔ تیزگرد",
      "m2": "همی آخت کینه همی کشت مرد",
      "verse_number": 13
    },
    {
      "id": "a1bd0efc-230f-4234-a094-e36aeaa93acb",
      "m1": "از آزادگان هرک دیدی به راه",
      "m2": "بپرسیدی از نامدار سپاه",
      "verse_number": 14
    },
    {
      "id": "227ca794-430f-430a-85e0-6a642404854a",
      "m1": "کجا اوفتادست گفتی زریر",
      "m2": "پدر آن نبرده سوار دلیر",
      "verse_number": 15
    },
    {
      "id": "6424c606-5614-42b9-9a77-7a8ec19b97b6",
      "m1": "یکی مرد بد نام او اردشیر",
      "m2": "سواری گرانمایه گردی دلیر",
      "verse_number": 16
    },
    {
      "id": "f3cc1927-2b2c-4bf7-8de8-e052482dd9b3",
      "m1": "بپرسید ازو راه فرزند خرد",
      "m2": "سوی بابکش راه بنمود گرد",
      "verse_number": 17
    },
    {
      "id": "220e79fd-16a1-48a3-89b7-0be6f5b16afb",
      "m1": "فگندست گفتا میان سپاه",
      "m2": "به نزدیکی آن درفش سیاه",
      "verse_number": 18
    },
    {
      "id": "5636666b-5e60-442c-8b5b-c15080e36887",
      "m1": "برو زود کانجا فتادست اوی",
      "m2": "مگر باز بینیش یک بار روی",
      "verse_number": 19
    },
    {
      "id": "55113607-98f7-44bd-b452-b32831896ca4",
      "m1": "پس آن شاهزاده برانگیخت بور",
      "m2": "همی کشت گرد و همی کرد شور",
      "verse_number": 20
    },
    {
      "id": "e75b8734-9e6b-45c4-bc5b-c64e99c179dd",
      "m1": "بدان تاختن تا بر او رسید",
      "m2": "چو او را بدان خاک کشته بدید",
      "verse_number": 21
    },
    {
      "id": "77842d42-911e-42c4-a541-3e8dfa441148",
      "m1": "بدیدش مر او را چو نزدیک شد",
      "m2": "جهان فروزانش تاریک شد",
      "verse_number": 22
    },
    {
      "id": "8150a560-c7fc-4a95-9fd9-420d0d869004",
      "m1": "برفتش دل و هوش وز پشت زین",
      "m2": "فگند از برش خویشتن بر زمین",
      "verse_number": 23
    },
    {
      "id": "53cfa25b-8caf-4978-b611-96f45715dfef",
      "m1": "همی گفت کای ماه تابان من",
      "m2": "چراغ دل و دیده و جان من",
      "verse_number": 24
    },
    {
      "id": "31187838-6f8d-4c0d-bd57-d8031dd37e0f",
      "m1": "بران رنج و سختی بپروردیم",
      "m2": "کنون چون برفتی بکه اسپردیم",
      "verse_number": 25
    },
    {
      "id": "c715b5b4-bb0c-4945-b96f-ab1121aedeb9",
      "m1": "ترا تا سپه داد لهراسپ شاه",
      "m2": "و گشتاسپ را داد تخت و کلاه",
      "verse_number": 26
    },
    {
      "id": "b164ab12-d8b6-4745-bc6b-ee8e0cd72aee",
      "m1": "همی لشکر و کشور آراستی",
      "m2": "همی رزم را به آرزو خواستی",
      "verse_number": 27
    },
    {
      "id": "4136a7c2-45b6-4df6-a042-c72487d732eb",
      "m1": "کنون کت به گیتی برافروخت نام",
      "m2": "شدی کشته و نارسیده به کام",
      "verse_number": 28
    },
    {
      "id": "35533f62-f5a2-42cb-a565-bf09f310e6b1",
      "m1": "شوم زی برادرت فرخنده شاه",
      "m2": "فرود آی گویمش از خوب گاه",
      "verse_number": 29
    },
    {
      "id": "c74c36e5-7a85-4ddb-b095-5ad8546dc87c",
      "m1": "که از تو نه این بد سزاوار اوی",
      "m2": "برو کینش از دشمنان بازجوی",
      "verse_number": 30
    },
    {
      "id": "2df43aa8-7829-41ad-8b78-5f55629b4682",
      "m1": "زمانی برین سان همی بود دیر",
      "m2": "پس آن باره را اندر آورد زیر",
      "verse_number": 31
    },
    {
      "id": "0aa64c52-b4e5-400b-baef-1f0befe4c12b",
      "m1": "همی رفت با بانگ تا نزد شاه",
      "m2": "که بنشسته بود از بر رزمگاه",
      "verse_number": 32
    },
    {
      "id": "acf7fb59-6c80-460d-9ad8-8ebacd5a152c",
      "m1": "شه خسروان گفت کای جان باب",
      "m2": "چرا کردی این دیدگان پر ز آب",
      "verse_number": 33
    },
    {
      "id": "08f3f426-10bf-45fa-8804-9f0f10f9253e",
      "m1": "کیان زاده گفت ای جهانگیر شاه",
      "m2": "نبینی که بابم شد اکنون تباه",
      "verse_number": 34
    },
    {
      "id": "fff01424-4749-4764-9706-68f1b689d44d",
      "m1": "پس آنگاه گفت ای جهانگیر شاه",
      "m2": "برو کینهٔ باب من بازخواه",
      "verse_number": 35
    },
    {
      "id": "618fbbc4-0224-4e16-a0e8-b62d60d48e54",
      "m1": "بماندست بابم بران خاک خشک",
      "m2": "سیه ریش او پروریده به مشک",
      "verse_number": 36
    },
    {
      "id": "11ce4345-7996-41ed-a87b-8a2a02c1b0b4",
      "m1": "چواز پور بشنید شاه این سخن",
      "m2": "سیاهش ببد روز روشن ز بن",
      "verse_number": 37
    },
    {
      "id": "2162be23-3cf9-4a30-8d69-1bb1b922171b",
      "m1": "جهان بر جهانجوی تاریک شد",
      "m2": "تن پیل واریش باریک شد",
      "verse_number": 38
    },
    {
      "id": "a42e16cb-a390-4ee7-862a-a51c6b4effe1",
      "m1": "بیارید گفتا سیاه مرا",
      "m2": "نبردی قبا و کلاه مرا",
      "verse_number": 39
    },
    {
      "id": "0f7b96f7-2a87-4d77-8668-2411a9456d31",
      "m1": "که امروز من از پی کین اوی",
      "m2": "برانم ازین دشمنان خون به جوی",
      "verse_number": 40
    },
    {
      "id": "aaba95eb-bf08-4a46-ae9a-a2d739ac5ba9",
      "m1": "یکی آتش انگیزم اندر جهان",
      "m2": "کزانجا به کیوان رسد دود آن",
      "verse_number": 41
    },
    {
      "id": "eb70cf7f-7a66-4f49-b141-487427d8a6c6",
      "m1": "چو گردان بدیدند کز رزمگاه",
      "m2": "ازان تیره آوردگاه سپاه",
      "verse_number": 42
    },
    {
      "id": "029bdd32-0b88-4d0d-ad87-b9c930d49f02",
      "m1": "که خسرو بسیچید آراستن",
      "m2": "همی رفت خواهد به کین خواستن",
      "verse_number": 43
    },
    {
      "id": "75adebba-d238-4e50-814b-9551ee6c81bf",
      "m1": "نباشیم گفتند همداستان",
      "m2": "که شاهنشه آن کدخدای جهان",
      "verse_number": 44
    },
    {
      "id": "e5ed4051-a568-4287-9871-d04e007126c3",
      "m1": "به رزم اندر آید به کین خواستن",
      "m2": "چرا باید این لشکر آراستن",
      "verse_number": 45
    },
    {
      "id": "9ad9ccca-d8da-4fd0-9723-3406473e6d68",
      "m1": "گرانمایه دستور گفتش به شاه",
      "m2": "نبایدت رفتن بدان رزمگاه",
      "verse_number": 46
    },
    {
      "id": "0cc95e69-2ed9-4b8d-8a69-8ef7b9d94ef6",
      "m1": "به بستور ده بارهٔ برنشست",
      "m2": "مر او را سوی رزم دشمن فرست",
      "verse_number": 47
    },
    {
      "id": "28a7b93b-9701-42fc-b034-766a9965b298",
      "m1": "که او آورد باز کین پدر",
      "m2": "ازان کش تو باز آوری خوبتر",
      "verse_number": 48
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 48
  },
  "order_in_parent": 16
}