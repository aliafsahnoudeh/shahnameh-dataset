{
  "id": "df811c02-91e0-46d3-a919-f0585ac30f30",
  "title": "بخش ۲۳ - سخن دقیقی",
  "verses": [
    {
      "id": "c5067137-ff8c-4b2d-8685-c833aaac7710",
      "m1": "بدان روزگار اندر اسفندیار",
      "m2": "به دشت اندرون بد ز بهر شکار",
      "verse_number": 1
    },
    {
      "id": "811f055d-35dd-4497-84ba-90f964b780e6",
      "m1": "ازان دشت آواز کردش کسی",
      "m2": "که جاماسپ را کرد خسرو گسی",
      "verse_number": 2
    },
    {
      "id": "76b51e99-369b-4684-8018-d830d67ceee6",
      "m1": "چو آن بانگ بشنید آمد شگفت",
      "m2": "بپیچید و خندیدن اندر گرفت",
      "verse_number": 3
    },
    {
      "id": "f7d2e91f-8a58-4d6d-8add-b78383f2ed48",
      "m1": "پسر بود او را گزیده چهار",
      "m2": "همه رزمجوی و همه نیزهدار",
      "verse_number": 4
    },
    {
      "id": "d3fef1f6-92f8-4e5f-b31d-510c15fb1266",
      "m1": "یکی نام بهمن دوم مهرنوش",
      "m2": "سیم نام او بد دلافروز طوش",
      "verse_number": 5
    },
    {
      "id": "bbf8c103-6893-4653-8604-66c61e435b0f",
      "m1": "چهارم بدش نام نوشاذرا",
      "m2": "نهادی کجا گنبد آذرا",
      "verse_number": 6
    },
    {
      "id": "2ab51e88-38ce-4a13-a3d0-dfcc93410908",
      "m1": "به شاه جهان گفت بهمن پسر",
      "m2": "که تا جاودان سبز بادات سر",
      "verse_number": 7
    },
    {
      "id": "b648113e-4fbc-4f14-af24-ae80be019ed4",
      "m1": "یکی ژرف خنده بخندید شاه",
      "m2": "نیابم همی اندرین هیچ راه",
      "verse_number": 8
    },
    {
      "id": "beb860f1-530d-4f71-ab10-92a72c68995e",
      "m1": "بدو گفت پورا بدین روزگار",
      "m2": "کس آید مرا از در شهریار",
      "verse_number": 9
    },
    {
      "id": "e0d8a316-1b8f-4f12-9bd5-cc302da7e2f5",
      "m1": "که آواز بشنیدم از ناگهان",
      "m2": "بترسم که از گفتهٔ بیرهان",
      "verse_number": 10
    },
    {
      "id": "c2e26590-aa3c-4c99-b4ad-d832a5eb1627",
      "m1": "ز من خسرو آزار دارد همی",
      "m2": "دلش از رهی بار دارد همی",
      "verse_number": 11
    },
    {
      "id": "aea6f219-6421-4eb1-b5ce-9966d4ed9039",
      "m1": "گرانمایه فرزند گفتا چرا",
      "m2": "چه کردی تو با خسرو کشورا",
      "verse_number": 12
    },
    {
      "id": "ce036dd1-ff68-4234-9626-9f858a514bf1",
      "m1": "سر شهریارانش گفت ای پسر",
      "m2": "ندانم گناهی به جای پدر",
      "verse_number": 13
    },
    {
      "id": "47c89355-26d1-4e00-b843-448ec48392e5",
      "m1": "مگر آنک تا دین بیاموختم",
      "m2": "همی در جهان آتش افروختم",
      "verse_number": 14
    },
    {
      "id": "935d38fd-61ac-41f2-abe6-a7bac97b49ec",
      "m1": "جهان ویژه کردم به برنده تیغ",
      "m2": "چرا دارد از من دل شاه میغ",
      "verse_number": 15
    },
    {
      "id": "fb5c2ee1-c886-43f8-b885-4ed30c638eb9",
      "m1": "همانا دل دیو بفریفتست",
      "m2": "که بر کشتن من بیاشیفتست",
      "verse_number": 16
    },
    {
      "id": "debb34d6-f84e-4351-967b-f071dd70d2b6",
      "m1": "همی تا بدین اندرون بود شاه",
      "m2": "پدید آمد از دور گرد سیاه",
      "verse_number": 17
    },
    {
      "id": "1a462ec6-c4c3-4413-9722-439ec4e976e0",
      "m1": "چراغ جهان بود دستور شاه",
      "m2": "فرستادهٔ شاه زی پور شاه",
      "verse_number": 18
    },
    {
      "id": "3ff28fdb-6d8e-4023-9c99-a8e2aff01224",
      "m1": "چو از دور دیدش ز کهسار گرد",
      "m2": "بدانست کامد فرستاده مرد",
      "verse_number": 19
    },
    {
      "id": "ff002301-112b-4082-9e45-fe73e8deb6c4",
      "m1": "پذیره شدش گرد فرزند شاه",
      "m2": "همی بود تا او بیامد ز راه",
      "verse_number": 20
    },
    {
      "id": "277f7c63-2a4d-4671-872f-c09dba81db63",
      "m1": "ز بارهٔ چمنده فرود آمدند",
      "m2": "گو پیر هر دو پیاده شدند",
      "verse_number": 21
    },
    {
      "id": "ec95c76d-04ee-4c27-9f04-a37fec3517ae",
      "m1": "بپرسید ازو فرخ اسفندیار",
      "m2": "که چونست شاه آن گو نامدار",
      "verse_number": 22
    },
    {
      "id": "46b1cec8-1764-428c-9aa2-dd5c236e4723",
      "m1": "خردمند گفتا درستست و شاد",
      "m2": "برش را ببوسید و نامه بداد",
      "verse_number": 23
    },
    {
      "id": "5f248d75-838b-4b8a-8845-5f00ed6563c7",
      "m1": "درست از همه کارش آگاه کرد",
      "m2": "که مر شاه را دیو بیراه کرد",
      "verse_number": 24
    },
    {
      "id": "b9f8c395-57cf-4470-8b2e-ac1d8eacb858",
      "m1": "خردمند را گفتش اسفندیار",
      "m2": "چه بینی مرا اندرین روی کار",
      "verse_number": 25
    },
    {
      "id": "c36c8ab6-bf2f-4b0e-9fc9-28aa4f14a981",
      "m1": "گر ایدونک با تو بیایم به در",
      "m2": "نه نیکو کند کار با من پدر",
      "verse_number": 26
    },
    {
      "id": "db02987c-d9e0-44dc-94f5-718622c4093d",
      "m1": "ور ایدونک نایم به فرمانبری",
      "m2": "برون کرده باشم سر از کهتری",
      "verse_number": 27
    },
    {
      "id": "3a00facc-fb28-4ffa-b0d7-61d52b78de65",
      "m1": "یکی چارهساز ای خردمند پیر",
      "m2": "نیابد چنین ماند بر خیره خیر",
      "verse_number": 28
    },
    {
      "id": "5b78be38-c9a4-49d8-a1e7-9cf896319cd0",
      "m1": "خردمند گفت ای شه پهلوان",
      "m2": "به دانندگی پیر و بختت جوان",
      "verse_number": 29
    },
    {
      "id": "75b626d8-6b50-4b02-a136-65d816cfa27f",
      "m1": "تو دانی که خشم پدر بر پسر",
      "m2": "به از جور مهتر پسر بر پدر",
      "verse_number": 30
    },
    {
      "id": "e0b34dbe-0d4e-4b52-81c5-9934e47e0a03",
      "m1": "ببایدت رفتن چنینست روی",
      "m2": "که هرچ او کند پادشاهست اوی",
      "verse_number": 31
    },
    {
      "id": "81360cb0-61ea-4f4c-8965-0d92d21b0c8c",
      "m1": "برین بر نهادند و گشتند باز",
      "m2": "فرستاده و پور خسرو نیاز",
      "verse_number": 32
    },
    {
      "id": "78dd5b8d-d8af-46ba-9db1-6ff8de07f43e",
      "m1": "یکی جای خوبش فرود آورید",
      "m2": "به کف بر گرفتند هر دو نبید",
      "verse_number": 33
    },
    {
      "id": "39678b91-8bbb-495e-80e3-78a56504d872",
      "m1": "به پیشش همی عود میسوختند",
      "m2": "تو گفتی همی آتش افروختند",
      "verse_number": 34
    },
    {
      "id": "93928da3-5c64-4f68-803c-c96f8faacfb7",
      "m1": "دگر روز بنشست بر تخت خویش",
      "m2": "ز لشکر بیامد فراوان به پیش",
      "verse_number": 35
    },
    {
      "id": "653c78aa-6d1b-40fa-9c59-440bd2f140c3",
      "m1": "همه لشکرش را به بهمن سپرد",
      "m2": "وزانجا خرامید با چند گرد",
      "verse_number": 36
    },
    {
      "id": "999fbc96-1a8a-4334-9f18-d14ee69006ec",
      "m1": "بیامد به درگاه آزاد شاه",
      "m2": "کمر بسته و بر نهاده کلاه",
      "verse_number": 37
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 37
  }
}