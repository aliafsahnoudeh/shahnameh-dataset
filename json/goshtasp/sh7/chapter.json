{
  "id": "3eefb8f7-d222-44fb-afb5-bd0d9741d35f",
  "title": "بخش ۷ - سخن دقیقی",
  "verses": [
    {
      "id": "72e473b2-566c-41c3-a42d-2623ca1739db",
      "m1": "همان چون بگفت این سخن شهریار",
      "m2": "زریر سپهدار و اسفندیار",
      "verse_number": 1
    },
    {
      "id": "78f29c15-b65a-43ee-8d8e-86c165ec1cf2",
      "m1": "کشیدند شمشیر و گفتند اگر",
      "m2": "کسی باشد اندر جهان سربسر",
      "verse_number": 2
    },
    {
      "id": "591be1c9-47e8-437e-b249-2b222795c951",
      "m1": "که نپسندد او را به دینآوری",
      "m2": "سر اندر نیارد به فرمانبری",
      "verse_number": 3
    },
    {
      "id": "75d93b64-5ee7-43aa-b13a-4b44db6beef2",
      "m1": "نیاید بدرگاه فرخنده شاه",
      "m2": "نبندد میان پیش رخشنده گاه",
      "verse_number": 4
    },
    {
      "id": "142eb9a3-8751-4eca-9adf-22876a4bc9d8",
      "m1": "نگیرد ازو راه و دین بهی",
      "m2": "مرین دین به را نباشد رهی",
      "verse_number": 5
    },
    {
      "id": "78aff636-ac1b-4e3b-86db-d0f25cc39a58",
      "m1": "به شمشیر جان از تنش بر کنیم",
      "m2": "سرش را به دار برین بر کنیم",
      "verse_number": 6
    },
    {
      "id": "760f25a8-a249-4afe-bb88-d2cf96553e01",
      "m1": "سپهدار ایران که نامش زریر",
      "m2": "نبرده دلیری چو درنده شیر",
      "verse_number": 7
    },
    {
      "id": "9858025d-0d62-4935-9b6d-f15ed6fb6593",
      "m1": "به شاه جهان گفت آزادهوار",
      "m2": "که دستور باشد مرا شهریار",
      "verse_number": 8
    },
    {
      "id": "17d5a788-1a9b-4fc3-a411-fea86118b526",
      "m1": "که پاسخ کنم جادو ارجاسپ را",
      "m2": "پسند آمد این شاه گشتاسپ را",
      "verse_number": 9
    },
    {
      "id": "7a0ab229-ba2d-401e-978a-676c945add72",
      "m1": "بدو گفت برخیز و پاسخ کنش",
      "m2": "نکال تگینان خلخ کنش",
      "verse_number": 10
    },
    {
      "id": "d62809ab-f02e-44c1-a408-e8a28b025b7f",
      "m1": "زریر گرانمایه و اسفندیار",
      "m2": "چو جاماسپ دستور ناباکدار",
      "verse_number": 11
    },
    {
      "id": "b843f073-c8ba-481d-83a7-0e7988e3fce5",
      "m1": "ز پیشش برفتند هر سه به هم",
      "m2": "شده سر پر از کین و دلها دژم",
      "verse_number": 12
    },
    {
      "id": "7f401e36-f5ac-48c6-a426-a1a6543af85c",
      "m1": "نوشتند نامه به ارجاسپ زشت",
      "m2": "هم اندر خور آن کجا او نوشت",
      "verse_number": 13
    },
    {
      "id": "144b64c7-58a1-4182-b8d8-f082fcfd328e",
      "m1": "زریر سپهبد گرفتش به دست",
      "m2": "چنان هم گشاده ببردش نبست",
      "verse_number": 14
    },
    {
      "id": "6c6a9757-e7ac-462a-a189-9ed87599239b",
      "m1": "سوی شاه برد و برو بر بخواند",
      "m2": "جهانجوی گشتاسپ خیره بماند",
      "verse_number": 15
    },
    {
      "id": "8f13032f-a2f2-441e-a853-c2cc31d35a58",
      "m1": "ز دانا سپهبد زریر سوار",
      "m2": "ز جاماسپ و ز فرخ اسفندیار",
      "verse_number": 16
    },
    {
      "id": "131a2972-0c49-4994-9bde-b94065479701",
      "m1": "ببست و نوشت اندرو نام خویش",
      "m2": "فرستادگان را همه خواند پیش",
      "verse_number": 17
    },
    {
      "id": "ca9943f7-71d9-4eb5-92e0-5e72dcf1ee55",
      "m1": "بگیرید گفت این و زی او برید",
      "m2": "نگر زین سپس راه را نسپرید",
      "verse_number": 18
    },
    {
      "id": "581a6e35-481f-4505-95f3-ec0aec6c62dc",
      "m1": "که گر نیستی اندر استا و زند",
      "m2": "فرستاده را زینهار از گزند",
      "verse_number": 19
    },
    {
      "id": "4e255757-f26c-4a8c-9118-fd516918f12d",
      "m1": "ازین خواب بیدارتان کردمی",
      "m2": "همان زنده بر دارتان کردمی",
      "verse_number": 20
    },
    {
      "id": "c27f10e0-d2dc-4660-9b62-ee741e90d973",
      "m1": "چنین تا بدانستی آن گرگسار",
      "m2": "که گردن نیازد ابا شهریار",
      "verse_number": 21
    },
    {
      "id": "9ea2ef5f-9472-44fc-a918-45d12284b33e",
      "m1": "بینداخت نامه بگفتا روید",
      "m2": "مرین را سوی ترک جادو برید",
      "verse_number": 22
    },
    {
      "id": "43eda41b-b9c9-4a90-867c-5ea782e67261",
      "m1": "بگویید هوشت فراز آمدست",
      "m2": "به خون و به خاکت نیاز آمدست",
      "verse_number": 23
    },
    {
      "id": "86fb1afe-9e31-4d59-b4b3-43d6ea4c170c",
      "m1": "زده باد گردنت خسته میان",
      "m2": "به خاک اندرون ریخته استخوان",
      "verse_number": 24
    },
    {
      "id": "03b1bb60-36fc-4ab0-8d1f-40d0691573ae",
      "m1": "درین ماه ار ایدونک خواهد خدای",
      "m2": "بپوشم به رزم آهنینه قبای",
      "verse_number": 25
    },
    {
      "id": "866d287b-1827-41ac-8ea4-cb1f89e89791",
      "m1": "به توران زمین اندر آرم سپاه",
      "m2": "کنم کشور گرگساران تباه",
      "verse_number": 26
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 26
  }
}