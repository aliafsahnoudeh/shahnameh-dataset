{
  "id": "568e8206-5a48-4d6d-832f-375600d7d8f7",
  "title": "بخش ۲۷",
  "verses": [
    {
      "id": "423351f4-0436-458d-8c92-11787afbc246",
      "m1": "کنون رزم ارجاسپ را نو کنیم",
      "m2": "به طبع روان باغ بی خو کنیم",
      "verse_number": 1
    },
    {
      "id": "d70e48ed-61e4-492c-9845-5e355104145c",
      "m1": "بفرمود تا کهرم تیغزن",
      "m2": "بود پیش سالار آن انجمن",
      "verse_number": 2
    },
    {
      "id": "10ae8fad-f845-4685-89d9-cdfc5723e546",
      "m1": "که ارجاسپ را بود مهتر پسر",
      "m2": "به خورشید تابان برآورده سر",
      "verse_number": 3
    },
    {
      "id": "8d38f3e7-3273-4e69-888a-0f62afbef4e6",
      "m1": "بدو گفت بگزین ز لشکر سوار",
      "m2": "ز ترکان شایسته مردی هزار",
      "verse_number": 4
    },
    {
      "id": "7a9cf29e-1eaa-45d9-ac29-2cfb1a95e6ac",
      "m1": "از ایدر برو تازیان تا به بلخ",
      "m2": "که از بلخ شد روز ما تار و تلخ",
      "verse_number": 5
    },
    {
      "id": "764194de-9a4d-4609-b824-a732bd252954",
      "m1": "نگر تا کرا یابی از دشمنان",
      "m2": "از آتش پرستان و آهرمنان",
      "verse_number": 6
    },
    {
      "id": "ec5415cf-445f-48d5-9480-4d9d2eb4709e",
      "m1": "سرانشان ببر خانهاشان بسوز",
      "m2": "بریشان شب آور به رخشنده روز",
      "verse_number": 7
    },
    {
      "id": "f0975b90-a6ef-47ad-9c4b-dd206e640346",
      "m1": "از ایوان گشتاسپ باید که دود",
      "m2": "زبانه برآرد به چرخ کبود",
      "verse_number": 8
    },
    {
      "id": "50531574-dd47-475f-913b-04850007621a",
      "m1": "اگر بند بر پای اسفندیار",
      "m2": "بیابی سرآور برو روزگار",
      "verse_number": 9
    },
    {
      "id": "77d4f8a4-00a7-4dc5-acc3-f3723676ef91",
      "m1": "همآنگه سرش را ز تن بازکن",
      "m2": "وزین روی گیتی پرآواز کن",
      "verse_number": 10
    },
    {
      "id": "1ea70aca-cb81-4aed-9cf1-0bfdcb9c6dee",
      "m1": "همه شهر ایران به کام تو گشت",
      "m2": "تو تیغی و دشمن نیام تو گشت",
      "verse_number": 11
    },
    {
      "id": "1498d8a9-2e70-40be-93d5-2f4eb424b600",
      "m1": "من اکنون ز خلخ به اندک زمان",
      "m2": "بیایم دمادم چو باد دمان",
      "verse_number": 12
    },
    {
      "id": "3af972ea-561f-4bf3-9999-cf21653758a7",
      "m1": "بخوانم سپاه پراگنده را",
      "m2": "برافشانم این گنج آگنده را",
      "verse_number": 13
    },
    {
      "id": "b0730d8f-dfa1-474c-afea-3455ef0f98fb",
      "m1": "بدو گفت کهرم که فرمان کنم",
      "m2": "ز فرمان تو رامش جان کنم",
      "verse_number": 14
    },
    {
      "id": "5da64d3a-ede6-4866-b884-0cd0beed1cc0",
      "m1": "چو خورشید تیغ از میان برکشید",
      "m2": "سپاه شب تیره شد ناپدید",
      "verse_number": 15
    },
    {
      "id": "2adf0ac1-301f-49e6-9426-4bc76ce22d1a",
      "m1": "بیاورد کهرم ز توران سپاه",
      "m2": "جهان گشت چون روی زنگی سیاه",
      "verse_number": 16
    },
    {
      "id": "1103f230-925d-42a8-b3d4-167a9532d957",
      "m1": "چو آمد بران مرز بگشاد دست",
      "m2": "کسی را که بد پیش آذرپرست",
      "verse_number": 17
    },
    {
      "id": "4e15fa66-7c51-4807-889d-7cc4bba7e24f",
      "m1": "چو ترکان رسیدند نزدیک بلخ",
      "m2": "گشاده زبان را به گفتار تلخ",
      "verse_number": 18
    },
    {
      "id": "3468377d-071c-4307-83f3-46f633c06c16",
      "m1": "ز کهرم چو لهراسپ آگاه شد",
      "m2": "غمی گشت و با رنج همراه شد",
      "verse_number": 19
    },
    {
      "id": "9d0f3e74-71e6-4ba3-a850-90c8e646aedb",
      "m1": "به یزدان چنین گفت کای کردگار",
      "m2": "توی برتر از گردش روزگار",
      "verse_number": 20
    },
    {
      "id": "03802e50-0f10-4352-9f9d-acaa3e7de580",
      "m1": "توانا و دانا و پایندهای",
      "m2": "خداوند خورشید تابندهای",
      "verse_number": 21
    },
    {
      "id": "f63ec090-dd74-4fd0-a246-52eaefd4cbee",
      "m1": "نگهدار دین و تن و هوش من",
      "m2": "همان نیروی جان وگر توش من",
      "verse_number": 22
    },
    {
      "id": "6ad74c5b-e8dc-444a-8f69-4697b1374f64",
      "m1": "که من بنده بر دست ایشان تباه",
      "m2": "نگردم توی پشت و فریادخواه",
      "verse_number": 23
    },
    {
      "id": "20f88652-8d1e-47ac-b0d7-a6e44362811d",
      "m1": "به بلخ اندرون نامداری نبود",
      "m2": "وزان گُرزداران سواری نبود",
      "verse_number": 24
    },
    {
      "id": "2f628ac6-ff3f-4906-89a5-b0b6eba0864a",
      "m1": "بیامد ز بازار مردی هزار",
      "m2": "چنانچون بود از در کارزار",
      "verse_number": 25
    },
    {
      "id": "6c038278-2eb7-49ae-9df5-4f460e347f59",
      "m1": "چو توران سپاه اندر آمد به تنگ",
      "m2": "بپوشید لهراسپ خفتان جنگ",
      "verse_number": 26
    },
    {
      "id": "9e6552dd-5ff2-401f-9665-3040853c2d23",
      "m1": "ز جای پرستش به آوردگاه",
      "m2": "بیامد به سر بر کیانی کلاه",
      "verse_number": 27
    },
    {
      "id": "097dfd79-ad41-438b-b578-2805d3106c62",
      "m1": "به پیری بغرید چون پیل مست",
      "m2": "یکی گُرزهٔ گاو پیکر به دست",
      "verse_number": 28
    },
    {
      "id": "058330fd-0899-442d-be07-c5b332e1a576",
      "m1": "به هر حملهای جادوی زان سران",
      "m2": "سپردی زمین را به گُرز گران",
      "verse_number": 29
    },
    {
      "id": "3250dffa-cae1-4150-9cff-4f40884da6fc",
      "m1": "همی گفت هرکس که این نامدار",
      "m2": "نباشد جز از گرد اسفندیار",
      "verse_number": 30
    },
    {
      "id": "a8994472-dc38-4d7b-a970-e42f1cb91347",
      "m1": "به هر سو که باره برانگیختی",
      "m2": "همی خاک با خون برآمیختی",
      "verse_number": 31
    },
    {
      "id": "675f2775-db08-4c02-8fd9-9ce615efc0e4",
      "m1": "هرانکس که آواز او یافتی",
      "m2": "به تنش اندرون زهره بشکافتی",
      "verse_number": 32
    },
    {
      "id": "64054702-385e-4e7a-adc3-352584f905fd",
      "m1": "به ترکان چنین گفت کهرم که چنگ",
      "m2": "میازید با او یکایک به جنگ",
      "verse_number": 33
    },
    {
      "id": "8c3ee0d5-8d7d-4ea0-b278-18669cf36640",
      "m1": "بکوشید و اندر میانش آورید",
      "m2": "خروش هژبر ژیان آورید",
      "verse_number": 34
    },
    {
      "id": "5a893ca9-ec59-4283-a466-955a95fbdac6",
      "m1": "برآمد چکاچاک زخم تبر",
      "m2": "خروش سواران پرخاشخر",
      "verse_number": 35
    },
    {
      "id": "c296027d-45e3-4de0-81bd-f15eb7dc7162",
      "m1": "چو لهراسپ اندر میانه بماند",
      "m2": "به بیچارگی نام یزدان بخواند",
      "verse_number": 36
    },
    {
      "id": "0c8bf8d5-45fd-4819-8af3-3d9fb1125e07",
      "m1": "ز پیری و از تابش آفتاب",
      "m2": "غمی گشت و بخت اندر آمد به خواب",
      "verse_number": 37
    },
    {
      "id": "b2d35e71-7bd5-4fbc-8108-6a7f7ef6f1ad",
      "m1": "جهاندیده از تیر ترکان بخست",
      "m2": "نگونسار شد مرد یزدان پرست",
      "verse_number": 38
    },
    {
      "id": "5fbba19c-9008-49d9-b9e4-fc4f30fcee06",
      "m1": "به خاک اندر آمد سر تاجدار",
      "m2": "برو انجمن شد فراوان سوار",
      "verse_number": 39
    },
    {
      "id": "8f5bf1fd-c4c3-4c07-8c86-c4ac62e8cd19",
      "m1": "بکردند چاک آن بر و جوشنش",
      "m2": "به شمشیر شد پارهپاره تنش",
      "verse_number": 40
    },
    {
      "id": "9d6380d0-d45c-45ed-8e64-58b750fdafa7",
      "m1": "همی نوسواریش پنداشتند",
      "m2": "چو خود از سر شاه برداشتند",
      "verse_number": 41
    },
    {
      "id": "1fd96342-9648-424e-9e45-bdc4b25b4c00",
      "m1": "رخی لعل دیدند و کافور موی",
      "m2": "از آهن سیاه آن بهشتیش روی",
      "verse_number": 42
    },
    {
      "id": "3d3a5b17-f1a3-4616-9dab-5a7f6ebbabd5",
      "m1": "بماندند یکسر ازو در شگفت",
      "m2": "که این پیر شمشیر چون برگرفت",
      "verse_number": 43
    },
    {
      "id": "a585e696-a35f-4a25-8648-963da1d4bb21",
      "m1": "کزین گونه اسفندیار آمدی",
      "m2": "سپه را برین دشت کار آمدی",
      "verse_number": 44
    },
    {
      "id": "74fcb3aa-e37e-43b0-8bc0-1d7bfdf01774",
      "m1": "بدین اندکی ما چرا آمدیم",
      "m2": "همی بیگله در چرا آمدیم",
      "verse_number": 45
    },
    {
      "id": "9964c510-6972-4285-9e40-821f3e6a452f",
      "m1": "به ترکان چنین گفت کهرم که کار",
      "m2": "همین بودمان رنج در کارزار",
      "verse_number": 46
    },
    {
      "id": "2ca4b6a1-391b-406a-80c1-3ae3309acc0c",
      "m1": "که این نامور شاه لهراسپ است",
      "m2": "که پورش جهاندار گشتاسپ است",
      "verse_number": 47
    },
    {
      "id": "cf4b959f-33e6-40ff-b04b-3ac475641569",
      "m1": "جهاندار با فر یزدان بود",
      "m2": "همه کار او رزم و میدان بود",
      "verse_number": 48
    },
    {
      "id": "2b392c5b-7fe7-4b16-9c10-1cb6bed7e878",
      "m1": "جز این نیز کاین خود پرستنده بود",
      "m2": "دل از تاج وز تخت برکنده بود",
      "verse_number": 49
    },
    {
      "id": "590fb638-ce64-48b2-9cc6-5c8ff9762b5a",
      "m1": "کنون پشت گشتاسپ زو شد تهی",
      "m2": "بپیچد ز دیهیم شاهنشهی",
      "verse_number": 50
    },
    {
      "id": "86a78356-f629-4f21-8a3e-6afa67fdf226",
      "m1": "از آنجا به بلخ اندر آمد سپاه",
      "m2": "جهان شد ز تاراج و کشتن سیاه",
      "verse_number": 51
    },
    {
      "id": "43fc4b1d-b407-48be-964c-f021675312c2",
      "m1": "نهادند سر سوی آتشکده",
      "m2": "بران کاخ و ایوان زر آژده",
      "verse_number": 52
    },
    {
      "id": "7cd911fa-8ad4-48fb-885f-046d9e92815b",
      "m1": "همه زند و استش همی سوختند",
      "m2": "چه پرمایهتر بود برتوختند",
      "verse_number": 53
    },
    {
      "id": "d8e0fc9d-5735-4dff-b1d6-493d29297743",
      "m1": "از ایرانیان بود هشتاد مرد",
      "m2": "زبانشان ز یزدان پر از یاد کرد",
      "verse_number": 54
    },
    {
      "id": "d185b1de-3f1e-4c74-81d7-c3ad963602f2",
      "m1": "همه پیش آتش بکشتندشان",
      "m2": "ره بندگی بر نوشتندشان",
      "verse_number": 55
    },
    {
      "id": "ee240015-fff9-479f-b76a-f7c810c1dad6",
      "m1": "ز خونشان بمرد آتش زرد هشت",
      "m2": "ندانم جزا جایشان جز بهشت",
      "verse_number": 56
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 56
  },
