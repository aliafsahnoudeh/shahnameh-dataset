{
  "id": "e8ede084-c600-4e90-b582-10465d953e70",
  "title": "بخش ۲۶ - سخن فردوسی",
  "verses": [
    {
      "id": "a5b97c8a-31c2-424f-bf4b-89ff9ea581cf",
      "m1": "چو این نامه افتاد در دست من",
      "m2": "به ماهی گراینده شد شست من",
      "verse_number": 1
    },
    {
      "id": "39c30a52-35e4-4018-b17e-f89554fea05e",
      "m1": "نگه کردم این نظم سست آمدم",
      "m2": "بسی بیت ناتندرست آمدم",
      "verse_number": 2
    },
    {
      "id": "eb3251eb-d4c4-45d1-8061-9025d3d026a0",
      "m1": "من این زان بگفتم که تا شهریار",
      "m2": "بداند سخن گفتن نابکار",
      "verse_number": 3
    },
    {
      "id": "647ad37e-1078-4513-9301-0bf4813fc5e6",
      "m1": "دو گوهر بد این با دو گوهر فروش",
      "m2": "کنون شاه دارد به گفتار گوش",
      "verse_number": 4
    },
    {
      "id": "de723eb6-1436-4156-be8b-2691fb7c130d",
      "m1": "سخن چون بدین گونه بایدت گفت",
      "m2": "مگو و مکن طبع با رنج جفت",
      "verse_number": 5
    },
    {
      "id": "6817cf93-79f5-42fc-b1cd-b80b83db4ddd",
      "m1": "چو بند روان بینی و رنج تن",
      "m2": "به کانی که گوهر نیابی مکن",
      "verse_number": 6
    },
    {
      "id": "c6c274ac-5c10-40d1-966f-695aed5f7f3a",
      "m1": "چو طبعی نباشد چو آب روان",
      "m2": "مبر سوی این نامهٔ خسروان",
      "verse_number": 7
    },
    {
      "id": "d56deddb-49b1-4560-b033-49c2241abf21",
      "m1": "دهن گر بماند ز خوردن تهی",
      "m2": "ازان به که ناساز خوانی نهی",
      "verse_number": 8
    },
    {
      "id": "f0a3dcec-5822-47da-a289-e10e2892693a",
      "m1": "یکی نامه بود از گه باستان",
      "m2": "سخنهای آن برمنش راستان",
      "verse_number": 9
    },
    {
      "id": "044f4e26-b45b-43e8-bc72-71475078a5de",
      "m1": "چو جامی گهر بود و منثور بود",
      "m2": "طبایع ز پیوند او دور بود",
      "verse_number": 10
    },
    {
      "id": "0eb1a676-32b2-4be7-b9d7-a1f136807dfd",
      "m1": "گذشته برو سالیان شش هزار",
      "m2": "گر ایدونک پرسش نماید شمار",
      "verse_number": 11
    },
    {
      "id": "2c619e6b-aa21-4e6a-9146-8d16cd4139b4",
      "m1": "نبردی به پیوند او کس گمان",
      "m2": "پر اندیشه گشت این دل شادمان",
      "verse_number": 12
    },
    {
      "id": "c7b99c90-410f-41a3-a8f5-b6babe61e58d",
      "m1": "گرفتم به گوینده بر آفرین",
      "m2": "که پیوند را راه داد اندرین",
      "verse_number": 13
    },
    {
      "id": "173dbe75-b209-45c3-a538-2048cff4e6fa",
      "m1": "اگرچه نپیوست جز اندکی",
      "m2": "ز رزم و ز بزم از هزاران یکی",
      "verse_number": 14
    },
    {
      "id": "46d1f081-14fb-462b-b95f-ecbe47049513",
      "m1": "همو بود گوینده را راه بر",
      "m2": "که بنشاند شاهی ابر گاهبر",
      "verse_number": 15
    },
    {
      "id": "628a33c2-e5b6-4f8e-8967-47ba14a6621f",
      "m1": "همی یافت از مهتران ارج و گنج",
      "m2": "ز خوی بد خویش بودی به رنج",
      "verse_number": 16
    },
    {
      "id": "a38c8e75-ed08-47ea-96d4-92e31a0e5c96",
      "m1": "ستایندهٔ شهریاران بدی",
      "m2": "به کاخ افسر نامداران بدی",
      "verse_number": 17
    },
    {
      "id": "4af5231a-b23c-4754-9742-9201c85490eb",
      "m1": "به شهر اندرون گشته گشتی سخن",
      "m2": "ازو نو شدی روزگار کهن",
      "verse_number": 18
    },
    {
      "id": "f8acb7a1-7f28-49a5-bb54-4b369950c9b9",
      "m1": "من این نامه فرخ گرفتم به فال",
      "m2": "بسی رنج بردم به بسیار سال",
      "verse_number": 19
    },
    {
      "id": "24d04628-9591-40d6-b3c1-66be4c92a934",
      "m1": "ندیدم سرافراز بخشندهای",
      "m2": "به گاه کیانبر درخشندهای",
      "verse_number": 20
    },
    {
      "id": "ad617889-bc16-4674-801f-d90b6d3e8cef",
      "m1": "مرا این سخن بر دل آسان نبود",
      "m2": "بجز خامشی هیچ درمان نبود",
      "verse_number": 21
    },
    {
      "id": "8a39c718-6423-4f79-84d9-22871b180f56",
      "m1": "نشستنگه مردم نیکبخت",
      "m2": "یکی باغ دیدم سراسر درخت",
      "verse_number": 22
    },
    {
      "id": "bd4a5790-0df7-4621-b3c1-4dff2e0a7f8a",
      "m1": "به جایی نبد هیچ پیدا درش",
      "m2": "بجز نام شاهی نبد افسرش",
      "verse_number": 23
    },
    {
      "id": "07137b0d-2450-449e-94cb-3d16e877da98",
      "m1": "که گر در خور باغ بایستمی",
      "m2": "اگر نیک بودی بشایستمی",
      "verse_number": 24
    },
    {
      "id": "44f349e8-0dbe-4ec2-8354-a76eb881eb8b",
      "m1": "سخن را چو بگذاشتم سال بیست",
      "m2": "بدان تا سزاوار این رنج کیست",
      "verse_number": 25
    },
    {
      "id": "5c965168-6d4b-498c-a513-d13fb51b69f2",
      "m1": "ابوالقاسم آن شهریار جهان",
      "m2": "کزو تازه شد تاج شاهنشاهان",
      "verse_number": 26
    },
    {
      "id": "b891aea0-2f25-4efe-a229-f20dbca51a12",
      "m1": "جهاندار محمود با فر و جود",
      "m2": "که او را کند ماه و کیوان سجود",
      "verse_number": 27
    },
    {
      "id": "2733b9f3-b534-454d-bc69-d077fcb04782",
      "m1": "سر نامه را نام او تاج گشت",
      "m2": "به فرش دل تیره چون عاج گشت",
      "verse_number": 28
    },
    {
      "id": "a8ea1bf9-ba81-4b5b-847e-c7c2475089af",
      "m1": "به بخش و به داد و به رای و هنر",
      "m2": "نبد تاج را زو سزاوارتر",
      "verse_number": 29
    },
    {
      "id": "2e9c1c5d-3be9-44fb-98c3-b58d0fc18698",
      "m1": "بیامد نشست از بر تخت داد",
      "m2": "جهاندار چون او ندارد به یاد",
      "verse_number": 30
    },
    {
      "id": "c0ca4ebc-3d86-41a1-a6f5-b7fb45d87e87",
      "m1": "ز شاهان پیشی همی بگذرد",
      "m2": "نفس داستان را همی نشمرد",
      "verse_number": 31
    },
    {
      "id": "a991592a-c39b-4e36-8f6c-4ebb00e7d382",
      "m1": "چه دینار بر چشم او بر چه خاک",
      "m2": "به رزم و به بزم اندرش نیست باک",
      "verse_number": 32
    },
    {
      "id": "e798a7a9-eeaf-4523-824d-75607dc614c0",
      "m1": "گه بزم زر و گه رزم تیغ",
      "m2": "ز خواهنده هرگز ندارد دریغ",
      "verse_number": 33
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 33
  }
}