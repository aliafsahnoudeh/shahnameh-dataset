{
  "id": "77fb654e-3d04-4fc8-8302-c3d47ba1b50a",
  "title": "بخش ۴ - سخن دقیقی",
  "verses": [
    {
      "id": "e59a929d-6523-4dcb-bab2-1893951f7a99",
      "m1": "چو چندی برآمد برین روزگار",
      "m2": "خجسته ببود اختر شهریار",
      "verse_number": 1
    },
    {
      "id": "b0427886-aa06-40bc-b735-0721423cbf18",
      "m1": "به شاه کیان گفت زردشت پیر",
      "m2": "که در دین ما این نباشد هژیر",
      "verse_number": 2
    },
    {
      "id": "72cf6e82-c8f3-44d6-81d5-d6a06d4d1647",
      "m1": "که تو باژ بدهی به سالار چین",
      "m2": "نه اندر خور دین ما باشد این",
      "verse_number": 3
    },
    {
      "id": "e95f375d-b905-4383-8e23-6eaa02ba94b4",
      "m1": "نباشم برین نیز همداستان",
      "m2": "که شاهان ما درگه باستان",
      "verse_number": 4
    },
    {
      "id": "87c3b470-0ff8-4089-b8f7-32d9af9a0d43",
      "m1": "به ترکان نداد ایچ کس باژ و ساو",
      "m2": "برین روزگار گذشته بتاو",
      "verse_number": 5
    },
    {
      "id": "953ae377-e9b4-406f-b807-e0a1b00f416a",
      "m1": "پذیرفت گشتاسپ گفتا که نیز",
      "m2": "نفرمایمش دادن این باژ چیز",
      "verse_number": 6
    },
    {
      "id": "c327db54-788a-48b8-8207-99452c871a2b",
      "m1": "پس آگاه شد نره دیوی ازین",
      "m2": "هماندرز زمان شد سوی شاه چین",
      "verse_number": 7
    },
    {
      "id": "c21eebac-041c-4499-9ba9-9646691d01d4",
      "m1": "بدو گفت کای شهریار جهان",
      "m2": "جهان یکسره پیش تو چون کهان",
      "verse_number": 8
    },
    {
      "id": "7c53168f-acdf-460b-a132-0f5ccf9d4d6b",
      "m1": "به جای آوریدند فرمان تو",
      "m2": "نتابد کسی سر ز پیمان تو",
      "verse_number": 9
    },
    {
      "id": "c3d7abfb-3ca3-4982-a466-cd74aa62f381",
      "m1": "مگر پورلهراسپ گشتاسپ شاه",
      "m2": "که آرد همی سوی ترکان سپاه",
      "verse_number": 10
    },
    {
      "id": "d041aedd-c0d4-4581-987e-fa2364dbc02e",
      "m1": "برد آشکارا همه دشمنی",
      "m2": "ابا تو چنو کرد یارد منی",
      "verse_number": 11
    },
    {
      "id": "6ee07d00-a8f9-49b6-a939-adbb4d412a17",
      "m1": "چو ارجاسپ بشنید گفتار دیو",
      "m2": "فرود آمد از گاه گیهان خدیو",
      "verse_number": 12
    },
    {
      "id": "027fdd18-7a32-4320-8234-f9fe908b53c6",
      "m1": "از اندوه او سست و بیمار شد",
      "m2": "دل و جان او پر ز تیمار شد",
      "verse_number": 13
    },
    {
      "id": "5a35cae3-8160-496b-9a7f-4e50814a92c5",
      "m1": "تگینان لشکرش را پیش خواند",
      "m2": "شنیده سخن پیش ایشان براند",
      "verse_number": 14
    },
    {
      "id": "432f2bd3-cac9-4320-8571-8bcaa6fd930b",
      "m1": "بدانید گفتا کز ایران زمین",
      "m2": "بشد فره و دانش و پاک دین",
      "verse_number": 15
    },
    {
      "id": "a3c5868f-c49f-4e85-b9f8-fac9b9a77ab3",
      "m1": "یکی جادو آمد به دین آوری",
      "m2": "به ایران به دعوی پیغمبری",
      "verse_number": 16
    },
    {
      "id": "65b2529f-3542-4a5a-93c8-2fbc3217bb65",
      "m1": "همی گوید از آسمان آمدم",
      "m2": "ز نزد خدای جهان آمدم",
      "verse_number": 17
    },
    {
      "id": "9c1513ff-8dde-4856-85c3-f9fa92626154",
      "m1": "خداوند را دیدم اندر بهشت",
      "m2": "من این زند و استا همه زو نوشت",
      "verse_number": 18
    },
    {
      "id": "57dc0aae-cb8f-43a0-a165-44653d445a57",
      "m1": "بدوزخ درون دیدم آهرمنا",
      "m2": "نیارستمش گشت پیرامنا",
      "verse_number": 19
    },
    {
      "id": "4e5ca67a-f4bc-4079-9a91-671e68c26012",
      "m1": "گروگر فرستادم از بهر دین",
      "m2": "بیارای گفتا به دانش زمین",
      "verse_number": 20
    },
    {
      "id": "89f5441a-7423-4186-9ad3-c1638dd460e7",
      "m1": "سرنامداران ایران سپاه",
      "m2": "گرانمایه فرزند لهراسپ شاه",
      "verse_number": 21
    },
    {
      "id": "26a08838-3f48-4078-bcbf-fa36aa7aa87b",
      "m1": "که گشتاسپ خوانندش ایرانیان",
      "m2": "ببست او یکی کشتی بر میان",
      "verse_number": 22
    },
    {
      "id": "ee5b856e-03ea-4216-9a7d-c7eba115655f",
      "m1": "برادرش نیز آن سوار دلیر",
      "m2": "سپهدار ایران که نامش زریر",
      "verse_number": 23
    },
    {
      "id": "ddab91e2-72d8-49ed-b2b4-2a61ded18f67",
      "m1": "همه پیش آن دین پژوه آمدند",
      "m2": "ازان پیر جادو ستوه آمدند",
      "verse_number": 24
    },
    {
      "id": "5b111c54-6324-4e6c-b800-07acc7afa5f8",
      "m1": "گرفتند ازو سربسر دین اوی",
      "m2": "جهان شد پر از راه و آیین اوی",
      "verse_number": 25
    },
    {
      "id": "eb80b046-1064-47b4-b2ed-c74eceb25d05",
      "m1": "نشست او به ایران به پیغمبری",
      "m2": "به کاری چنان یافه و سرسری",
      "verse_number": 26
    },
    {
      "id": "1c98c22b-aa57-4048-a3b1-aec634c362cc",
      "m1": "یکی نامه باید نوشتن کنون",
      "m2": "سوی آن زده سر ز فرمان برون",
      "verse_number": 27
    },
    {
      "id": "32b7fee1-5e10-4011-9776-f0be792cce5f",
      "m1": "ببایدش دادن بسی خواسته",
      "m2": "که نیکو بود داده ناخواسته",
      "verse_number": 28
    },
    {
      "id": "113ef51c-35ec-42f1-92bb-2589afbc357e",
      "m1": "مر او را بگویی کزین راه زشت",
      "m2": "بگرد و بترس از خدای بهشت",
      "verse_number": 29
    },
    {
      "id": "1262a50b-032e-45f6-ae96-f27b53192622",
      "m1": "مر آن پیر ناپاک را دور کن",
      "m2": "بر آیین ما بر یکی سور کن",
      "verse_number": 30
    },
    {
      "id": "952ce9b9-0772-43f0-a11e-b3a85c38b2fa",
      "m1": "گر ایدونک نپذیرد از ما سخن",
      "m2": "کند روی تازه بما بر کهن",
      "verse_number": 31
    },
    {
      "id": "858d065b-507a-4179-a1e0-ff1a41976234",
      "m1": "سپاه پراگنده باز آوریم",
      "m2": "یکی خوب لشکر فراز آوریم",
      "verse_number": 32
    },
    {
      "id": "b3cabcdf-bb8b-4425-9156-daa468396aa9",
      "m1": "به ایران شویم از پس کار اوی",
      "m2": "نترسیم از آزار و پیکار اوی",
      "verse_number": 33
    },
    {
      "id": "a87c8812-ffe8-46c4-86ff-e51541c2934d",
      "m1": "برانیمش از پیش و خوارش کنیم",
      "m2": "ببندیم و زنده به دارش کنیم",
      "verse_number": 34
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 34
  },
