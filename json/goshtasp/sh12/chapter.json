{
  "id": "69254196-c08c-427a-a6fa-84b5b5d81d74",
  "title": "بخش ۱۲ - سخن دقیقی",
  "verses": [
    {
      "id": "6a15e317-c065-4b11-bd78-04f6338a5b95",
      "m1": "چو اندر گذشت آن شب و بود روز",
      "m2": "بتابید خورشید گیهان فروز",
      "verse_number": 1
    },
    {
      "id": "f757011b-deb0-4240-a824-3bc804e77dd1",
      "m1": "به زین بر نشستند هر دو سپاه",
      "m2": "همی دید زان کوه گشتاسپ شاه",
      "verse_number": 2
    },
    {
      "id": "f3b03b7b-61dd-4275-9cbf-6c595e393bb0",
      "m1": "چو از کوه دید آن شه بافرین",
      "m2": "کجا برنشستند گردان به زین",
      "verse_number": 3
    },
    {
      "id": "01adcc84-042c-4627-864f-1ce5ce8dc477",
      "m1": "سیه رنگ بهزاد را پیش خواست",
      "m2": "تو گفتی که بیستونست راست",
      "verse_number": 4
    },
    {
      "id": "c7417512-7aa1-4a2f-b4c0-5e3350b24db0",
      "m1": "برو بر فگندند برگستوان",
      "m2": "برو بر نشست آن شه خسروان",
      "verse_number": 5
    },
    {
      "id": "aad01226-de4b-4e1d-8f46-5dbd92e5380f",
      "m1": "چو هر دو برابر فرود آمدند",
      "m2": "ابر پیل بر نای رویین زدند",
      "verse_number": 6
    },
    {
      "id": "e3cd7fea-b8b0-469d-b8e7-5fe667bb33c1",
      "m1": "یکی رزمگاهی بیاراستند",
      "m2": "یلان هم نبردان همی خواستند",
      "verse_number": 7
    },
    {
      "id": "0a3b77e1-2d1d-4f96-84a8-205d9d373e8f",
      "m1": "بکردند یک تیرباران نخست",
      "m2": "بسان تگرگ بهاران درست",
      "verse_number": 8
    },
    {
      "id": "49644e7d-0bea-4d71-9f32-a873896008cd",
      "m1": "بشد آفتاب از جهان ناپدید",
      "m2": "چه داند کسی کان شگفتی ندید",
      "verse_number": 9
    },
    {
      "id": "84a26008-9a01-43bd-81e1-a0686a56a552",
      "m1": "بپوشیده شد چشمهٔ آفتاب",
      "m2": "ز پیکانهاشان درفشان چو آب",
      "verse_number": 10
    },
    {
      "id": "3aa47e07-5cdd-4742-9daa-a7469eba6c9d",
      "m1": "تو گفتی جهان ابر دارد همی",
      "m2": "وزان ابر الماس بارد همی",
      "verse_number": 11
    },
    {
      "id": "aca8650b-e88b-4c2c-94e5-2caaa8cdd9c7",
      "m1": "وزان گرزداران و نیزهوران",
      "m2": "همی تاختند آن برین این بران",
      "verse_number": 12
    },
    {
      "id": "a3ed2455-aa11-4b84-831d-bf90b309039b",
      "m1": "هوازی جهان بود شبگون شده",
      "m2": "زمین سربسر پاک گلگون شده",
      "verse_number": 13
    },
    {
      "id": "15651d2a-eb1d-453f-81c8-30cb5b5479f3",
      "m1": "بیامد نخست آن سوار هژیر",
      "m2": "پس شهریار جهان اردشیر",
      "verse_number": 14
    },
    {
      "id": "37e76d14-b147-4244-9914-fa58ec912aee",
      "m1": "به آوردگه رفت نیزه به دست",
      "m2": "تو گفتی مگر طوس اسپهبدست",
      "verse_number": 15
    },
    {
      "id": "655881df-5195-47d2-81d6-0fd297fb867b",
      "m1": "برین سان همی گشت پیش سپاه",
      "m2": "نبود آگه از بخش خورشید و ماه",
      "verse_number": 16
    },
    {
      "id": "ddf3e602-28d2-49ef-a662-f874f52cd227",
      "m1": "بیامد یکی ناوکش بر میان",
      "m2": "گذارنده شد بر سلیح کیان",
      "verse_number": 17
    },
    {
      "id": "df30ee7a-9bfd-4956-9f56-6f3e4732e906",
      "m1": "ز بور اندر افتاد خسرو نگون",
      "m2": "تن پاکش آلوده شد پر ز خون",
      "verse_number": 18
    },
    {
      "id": "83356b86-0884-42b4-8170-2f993604ccaa",
      "m1": "دریغ آن نکو روی همرنگ ماه",
      "m2": "که بازش ندید آن خردمند شاه",
      "verse_number": 19
    },
    {
      "id": "ea6de114-461a-42fa-b9da-2b6ba7f45623",
      "m1": "بیامد بر شاه شیر اورمزد",
      "m2": "کجا زو گرفتی شهنشاه پزد",
      "verse_number": 20
    },
    {
      "id": "3dd6fa32-abc7-43c9-811c-92edb7fb9046",
      "m1": "ز پیش اندر آمد به دشت اندرا",
      "m2": "به زهر آب داده یکی خنجرا",
      "verse_number": 21
    },
    {
      "id": "db824453-ca63-4043-81de-e09e733b8486",
      "m1": "خروشی برآورد برسان شیر",
      "m2": "که آورد خواهد ژیان گور زیر",
      "verse_number": 22
    },
    {
      "id": "a7b22c94-8e39-4759-a07a-21fd27d17436",
      "m1": "ابر کین آن شاهزاده سوار",
      "m2": "بکشت از سواران دشمن هزار",
      "verse_number": 23
    },
    {
      "id": "05cc4b88-2a6f-4f34-876d-3ecafb8388ba",
      "m1": "به هنگامهٔ بازگشتن ز جنگ",
      "m2": "که روی زمین گشته بد لاله رنگ",
      "verse_number": 24
    },
    {
      "id": "5010731e-3f31-4d54-a204-a9e4c1d40667",
      "m1": "بیامد یکی تیرش اندر قفا",
      "m2": "شد آن خسرو شاهزاده فنا",
      "verse_number": 25
    },
    {
      "id": "4e3572f8-46e6-47b3-8fca-96c3041b76c4",
      "m1": "بیامد پسش باز شیدسپ شاه",
      "m2": "که مانندهٔ شاه بد همچو ماه",
      "verse_number": 26
    },
    {
      "id": "def9d549-743e-4f89-9f95-b2a941626756",
      "m1": "یکی دیزهای بر نشسته چو نیل",
      "m2": "به تگ همچو آهو به تن همچو پیل",
      "verse_number": 27
    },
    {
      "id": "0fcbd307-4724-4042-9d01-1dec9b67fb59",
      "m1": "به آوردگه گشت و نیزه بگاشت",
      "m2": "چو لختی بگردید نیزه بداشت",
      "verse_number": 28
    },
    {
      "id": "5da4761f-33ff-44d6-be69-190aad8d61d0",
      "m1": "کدامست گفتا کهرم سترگ",
      "m2": "کجا پیکرش پیکر پیر گرگ",
      "verse_number": 29
    },
    {
      "id": "16df1ee4-4800-4e69-b3f8-f4403144b2b4",
      "m1": "بیامد یکی دیو گفتا منم",
      "m2": "که با گرسنه شیر دندان زنم",
      "verse_number": 30
    },
    {
      "id": "1e8d27cb-c615-47ee-b10d-c8753fbff2a7",
      "m1": "به نیزه بگشتند هر دو چو باد",
      "m2": "بزد ترک را نیزهٔ شاهزاد",
      "verse_number": 31
    },
    {
      "id": "1d44104a-ba95-4322-b302-7ce38b2be1a7",
      "m1": "ز باره در آورد و ببرید سر",
      "m2": "به خاک اندر افگنده زرین کمر",
      "verse_number": 32
    },
    {
      "id": "12ef2fd1-2df6-4418-a8ed-5f67d7c26cc2",
      "m1": "همی گشت بر پیش گردان چین",
      "m2": "بسان یکی کوه بر پشت زین",
      "verse_number": 33
    },
    {
      "id": "adb4b470-9536-4c78-b58f-17c3ac1c48df",
      "m1": "همانا چنو نیز دیده ندید",
      "m2": "ز خوبی کجا بود چشمش رسید",
      "verse_number": 34
    },
    {
      "id": "28b92863-104e-49af-88d2-a8eaaad30b62",
      "m1": "یکی ترک تیری برو برگماشت",
      "m2": "ز پشتش سر تیر بیرون گذاشت",
      "verse_number": 35
    },
    {
      "id": "2623bc15-920c-4862-8892-a09293c14d7e",
      "m1": "دریغ آن شه پروریده به ناز",
      "m2": "بشد روی او باب نادیده باز",
      "verse_number": 36
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 36
  }
}