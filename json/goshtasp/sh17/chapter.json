{
  "id": "136f3334-073a-4ba8-b655-2eba141ed836",
  "title": "بخش ۱۷ - سخن دقیقی",
  "verses": [
    {
      "id": "b86e48e4-818b-437c-903b-4e84189c721e",
      "m1": "بدو داد پس شاه بهزاد را",
      "m2": "سپه جوشن و خود پولاد را",
      "verse_number": 1
    },
    {
      "id": "0bfb11f4-dc14-421b-b3d1-146938df816f",
      "m1": "پس شاه کشته میان را ببست",
      "m2": "سیه رنگ بهزاد را برنشست",
      "verse_number": 2
    },
    {
      "id": "e1dadbda-adea-4ce1-a81b-8d752cc53744",
      "m1": "خرامید تا رزمگاه سپاه",
      "m2": "نشسته بران خوب رنگ سیاه",
      "verse_number": 3
    },
    {
      "id": "8caf6853-2025-464c-a04b-2ec88ebb0d01",
      "m1": "به پیش صف دشمنان ایستاد",
      "m2": "همی برکشید از جگر سرد باد",
      "verse_number": 4
    },
    {
      "id": "699ff7e9-ffb4-43c9-8b29-f9ea2d2e2483",
      "m1": "منم گفت بستور پور زریر",
      "m2": "پذیره نیاید مرا نره شیر",
      "verse_number": 5
    },
    {
      "id": "14720166-9b3c-4bbf-af51-737409c5074b",
      "m1": "کجا باشد آن جادوی بیدرفش",
      "m2": "که بردست آن جمشیدی درفش",
      "verse_number": 6
    },
    {
      "id": "96d64c47-28dd-4dc7-b66b-3195859b2873",
      "m1": "چو پاسخ ندادند آزاد را",
      "m2": "برانگیخت شبرنگ بهزاد را",
      "verse_number": 7
    },
    {
      "id": "e61d24a7-2b53-4398-8c48-1bd16630019c",
      "m1": "بکشت از تگینان لشکر بسی",
      "m2": "پذیره نیامد مر او را کسی",
      "verse_number": 8
    },
    {
      "id": "00c14e12-a7b5-4058-b753-3dd0119825b8",
      "m1": "وزان سوی دیگر گو اسفندیار",
      "m2": "همی کشتشان بیمر و بیشمار",
      "verse_number": 9
    },
    {
      "id": "cdb8af15-4a8f-4e08-8178-e06994a821a0",
      "m1": "چو سالار چین دید بستور را",
      "m2": "کیان زاده آن پهلوان پور را",
      "verse_number": 10
    },
    {
      "id": "b3ba2249-a61c-4955-8d36-371871e80c7e",
      "m1": "به لشکر بگفت این که شاید بدن",
      "m2": "کزین سان همی نیزه داند زدن",
      "verse_number": 11
    },
    {
      "id": "901e8daa-4798-4a8e-9479-d677b3ded54a",
      "m1": "بکشت از تگینان من بیشمار",
      "m2": "مگر گشت زنده زریر سوار",
      "verse_number": 12
    },
    {
      "id": "55ca0c62-5a4d-4e20-a23e-4ce7538127fa",
      "m1": "که نزد من آمد زریر از نخست",
      "m2": "برین سان همی تاخت باره درست",
      "verse_number": 13
    },
    {
      "id": "c4592b85-7915-481f-ac16-024f4d217564",
      "m1": "کجا رفت آن بیدرفش گزین",
      "m2": "هماکنون سوی منش خوانید هین",
      "verse_number": 14
    },
    {
      "id": "085ea1be-4daf-4910-9371-e8035c8c6011",
      "m1": "بخواندند و آمد دمان بیدرفش",
      "m2": "گرفته به دست آن درفش بنفش",
      "verse_number": 15
    },
    {
      "id": "dfcdd9e0-7755-42e3-b2cc-31883f2513bf",
      "m1": "نشسته بران بارهٔ خسروی",
      "m2": "بپوشیده آن جوشن پهلوی",
      "verse_number": 16
    },
    {
      "id": "f20cf991-d8eb-47b2-a677-88369492c836",
      "m1": "خرامید تا پیش لشکر ز شاه",
      "m2": "نگهبان مرز و نگهبان گاه",
      "verse_number": 17
    },
    {
      "id": "b4a97a2f-57dd-4039-847d-2d21acea03bb",
      "m1": "گرفته همان تیغ زهر آبدار",
      "m2": "که افگنده بد آن زریر سوار",
      "verse_number": 18
    },
    {
      "id": "22bd8dd0-dd42-4136-9329-8e5a9f9fca85",
      "m1": "بگشتند هر دو به ژوپین و تیر",
      "m2": "سر جادوان ترک و پور زریر",
      "verse_number": 19
    },
    {
      "id": "709ddead-a3ee-4d47-a34d-18a8b3892db3",
      "m1": "پس آگاه کردند زان کارزار",
      "m2": "پس شاه را فرخ اسفندیار",
      "verse_number": 20
    },
    {
      "id": "b4f63665-02e5-492b-9c42-74f342919dc7",
      "m1": "همی تاختش تا بدیشان رسید",
      "m2": "سر جادوان چون مر او را بدید",
      "verse_number": 21
    },
    {
      "id": "593bce8a-ba87-4402-9659-66cc8552ade8",
      "m1": "برافگند اسپ از میان نبرد",
      "m2": "بدانست کش بر سر افتاد مرد",
      "verse_number": 22
    },
    {
      "id": "3b559a97-b8b6-49ad-9f0b-bdab07f9f0e1",
      "m1": "بینداخت آن زهر خورده به روی",
      "m2": "مگر کس کند زشت رخشنده روی",
      "verse_number": 23
    },
    {
      "id": "5fb47d70-9b9d-437f-9de2-99eca1425a64",
      "m1": "نیامد برو تیغ زهر آبدار",
      "m2": "گرفتش همان تیغ شاه استوار",
      "verse_number": 24
    },
    {
      "id": "8b4c75b1-ea3f-4423-b0f3-792e5e337541",
      "m1": "زدش پهلوانی یکی بر جگر",
      "m2": "چنان کز دگر سو برون کرد سر",
      "verse_number": 25
    },
    {
      "id": "67da142f-50c0-4471-9b55-1f3a2d9e4094",
      "m1": "چو آهو ز باره در افتاد و مرد",
      "m2": "بدید از کیان زادگان دستبرد",
      "verse_number": 26
    },
    {
      "id": "2630ac2d-3509-4d36-a8d4-3a7516f8e1c6",
      "m1": "فرود آمد از باره اسفندیار",
      "m2": "سلیح زریر آن گزیده سوار",
      "verse_number": 27
    },
    {
      "id": "8c64197b-796a-4546-a5b6-fde70b8a4691",
      "m1": "ازان جادوی پیر بیرون کشید",
      "m2": "سرش را ز نیمهتن اندر برید",
      "verse_number": 28
    },
    {
      "id": "2d083930-c5d7-43fe-a06c-3bd3469cbb52",
      "m1": "نکو رنگ بارهٔ زریر و درفش",
      "m2": "ببرد و سر بیهنر بیدرفش",
      "verse_number": 29
    },
    {
      "id": "ef6a093d-9458-41e0-b22c-0b2de3457111",
      "m1": "سپاه کیان بانگ برداشتند",
      "m2": "همی نعره از ابر بگذاشتند",
      "verse_number": 30
    },
    {
      "id": "0186e959-cd9a-49b9-a5fe-cb2767df4aa6",
      "m1": "که پیروز شد شاه و دشمن فگند",
      "m2": "بشد بازآورد اسپ سمند",
      "verse_number": 31
    },
    {
      "id": "4e9277f0-4b8c-48aa-80ab-8130600f8bfa",
      "m1": "شد آن شاهزاده سوار دلیر",
      "m2": "سوی شاه برد آن سمند زریر",
      "verse_number": 32
    },
    {
      "id": "5e1df28a-8ab0-4e54-ace9-ccf465635ebe",
      "m1": "سر پیر جادوش بنهاد پیش",
      "m2": "کشنده بکشت اینت آیین و کیش",
      "verse_number": 33
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 33
  },
