{
  "id": "42b2cff9-3b3e-4220-bd23-2a0d6f43f7ce",
  "title": "بخش ۱۴ - سخن دقیقی",
  "verses": [
    {
      "id": "0b081a51-ee97-4d7b-aae0-621e6760ba6f",
      "m1": "دو هفته برآمد برین کارزار",
      "m2": "که هزمان همی تیرهتر گشت کار",
      "verse_number": 1
    },
    {
      "id": "e442acdc-ec89-49c7-8f79-ca33495ee6f3",
      "m1": "به پیش اندر آمد نبرده زریر",
      "m2": "سمندی بزرگ اندر آورده زیر",
      "verse_number": 2
    },
    {
      "id": "a80c4e72-14fe-4040-b70f-e0783824ca3d",
      "m1": "به لشکرگه دشمن اندر فتاد",
      "m2": "چو اندر گیا آتش و تیز باد",
      "verse_number": 3
    },
    {
      "id": "68eacaa2-6d3f-4dee-97fc-a9d7c76aa098",
      "m1": "همی کشت زیشان همی خوابنید",
      "m2": "مر او را نه استاد هرکش بدید",
      "verse_number": 4
    },
    {
      "id": "a748dd36-140c-487c-93a0-efcef8cabc8a",
      "m1": "چو ارجاسپ دانست کان پورشاه",
      "m2": "سپه را همی کرد خواهد تباه",
      "verse_number": 5
    },
    {
      "id": "cfd85333-b3e7-4183-add0-2b0dd4a3202c",
      "m1": "بدان لشکر خویش آواز داد",
      "m2": "که چونین همی داد خواهید داد",
      "verse_number": 6
    },
    {
      "id": "0ddb2e9d-3ba2-416c-a883-a89b1a75e5d9",
      "m1": "دو هفته برآمد برین بر درنگ",
      "m2": "نبینم همی روی فرجام جنگ",
      "verse_number": 7
    },
    {
      "id": "03cbad9e-d0bf-48c5-aae7-adedc9655e21",
      "m1": "بکردند گردان گشتاسپ شاه",
      "m2": "بسی نامداران لشکر تباه",
      "verse_number": 8
    },
    {
      "id": "e5951355-a721-40b4-bc06-609bb54a4dc9",
      "m1": "کنون اندر آمد میانه زریر",
      "m2": "چو گرگ دژآگاه و شیر دلیر",
      "verse_number": 9
    },
    {
      "id": "db5bb8cc-8717-449f-9d81-b3bbb5d250a6",
      "m1": "بکشت او همه پاک مردان من",
      "m2": "سرافراز گردان و ترکان من",
      "verse_number": 10
    },
    {
      "id": "4dda0f71-81a7-47e6-9e10-cce1be9ea9ce",
      "m1": "یکی چاره باید سگالیدنا",
      "m2": "و گرنه ره ترک مالیدنا",
      "verse_number": 11
    },
    {
      "id": "6360e9e9-d6c2-487e-9172-4c62c9d0f228",
      "m1": "برین گر بماند زمانی چنین",
      "m2": "نه ایتاش ماند نه خلخ نه چین",
      "verse_number": 12
    },
    {
      "id": "0cbe13c8-91d4-4926-b331-f22b249cd306",
      "m1": "کدامست مرد از شما نام خواه",
      "m2": "که آید پدید از میان سپاه",
      "verse_number": 13
    },
    {
      "id": "04f8cadb-652a-456e-950a-61294a912128",
      "m1": "یکی ترگ داری خرامد به پیش",
      "m2": "خنیده کند در جهان نام خویش",
      "verse_number": 14
    },
    {
      "id": "47cad6d0-563f-4c59-8579-cebe2f4f29d2",
      "m1": "هران کز میان باره انگیزند",
      "m2": "بگرداندش پشت و بگریزند",
      "verse_number": 15
    },
    {
      "id": "8b2b92d1-b543-43b7-86d6-eba84c1e3d34",
      "m1": "من او را دهم دختر خویش را",
      "m2": "سپارم بدو لشکر خویش را",
      "verse_number": 16
    },
    {
      "id": "56d4008e-2033-45e2-8008-9575929a75fe",
      "m1": "سپاهش ندادند پاسوخ باز",
      "m2": "بترسیده بد لشکر سرفراز",
      "verse_number": 17
    },
    {
      "id": "54b10fe7-9c2d-4247-bc60-7615160b7f36",
      "m1": "چو شیر اندرافتاد و چون پیل مست",
      "m2": "همی کشت زیشان همی کرد پست",
      "verse_number": 18
    },
    {
      "id": "7b5a5fc0-75fe-40ce-b358-9bf153b5c50a",
      "m1": "همی کوفتشان هر سوی زیر پای",
      "m2": "سپهدار ایران فرخنده رای",
      "verse_number": 19
    },
    {
      "id": "a5a18da4-8547-45ce-90e8-3dd584db9ccc",
      "m1": "چو ارجاسپ دید آن چنان خیره شد",
      "m2": "که روز سپیدش شب تیره شد",
      "verse_number": 20
    },
    {
      "id": "8ffc1a59-b021-4581-96b1-59f516add2bb",
      "m1": "دگر باره گفت ای بزرگان من",
      "m2": "تگینان لشکر گزینان من",
      "verse_number": 21
    },
    {
      "id": "d260eb9c-f5f6-4845-8e45-20aad31affc2",
      "m1": "ببینید خویشان و پیوستگان",
      "m2": "ببینید نالیدن خستگان",
      "verse_number": 22
    },
    {
      "id": "8c166d0d-904b-44b5-9796-587f15f7f808",
      "m1": "ازان زخم آن پهلو آتشی",
      "m2": "که سامیش گرزست و تیر آرشی",
      "verse_number": 23
    },
    {
      "id": "834fcdb1-a720-403e-8f4e-e36994208d63",
      "m1": "که گفتی بسوزد همی لشکرم",
      "m2": "کنون برفروزد همی کشورم",
      "verse_number": 24
    },
    {
      "id": "de5bac64-f78f-4877-be77-3f1e365dbc2c",
      "m1": "کدامست مرد از شما چیره دست",
      "m2": "که بیرون شود پیش این پیل مست",
      "verse_number": 25
    },
    {
      "id": "9c66f1ec-eff7-425c-951d-ffcf47a1cef9",
      "m1": "هرانکو بدان گردکش یازدا",
      "m2": "مر او را  ازان باره بندازدا",
      "verse_number": 26
    },
    {
      "id": "2e28e549-3eda-444a-9f6f-31368ae45950",
      "m1": "چو بخشندهام بیش بسپارمش",
      "m2": "کلاه از بر چرخ بگذارمش",
      "verse_number": 27
    },
    {
      "id": "8f6d0ad1-3096-4d97-b5dd-06348659dc53",
      "m1": "همیدون نداد ایچ کس پاسخش",
      "m2": "بشد خیره و زرد گشت آن رخش",
      "verse_number": 28
    },
    {
      "id": "e28da814-3e2f-4774-83a8-427eb15f6f6a",
      "m1": "سه بار این سخن را بریشان براند",
      "m2": "چو پاسخ نیامدش خامش بماند",
      "verse_number": 29
    },
    {
      "id": "e8519bf2-4422-4e2f-9024-762d6e9508af",
      "m1": "بیامد پس آن بیدرفش سترگ",
      "m2": "پلید و بد و جادوی و پیر گرگ",
      "verse_number": 30
    },
    {
      "id": "a37f65e7-1b90-4e2c-8ddd-c0e0849cc851",
      "m1": "به ارچاسپ گفت ای بلند آفتاب",
      "m2": "به زور و به تن همچو افراسیاب",
      "verse_number": 31
    },
    {
      "id": "77553732-4d91-4428-a226-ef7539dd1b3b",
      "m1": "به پیش تو آوردم این جان خویش",
      "m2": "سپر کردم این جان شیرینت پیش",
      "verse_number": 32
    },
    {
      "id": "9ea61d24-2c60-4c67-acb0-e37bb666b97d",
      "m1": "شوم پیش آن پیل آشفته مست",
      "m2": "گر ایدونک یابم بران پیل دست",
      "verse_number": 33
    },
    {
      "id": "f65b9c38-0801-4180-a284-715fb717dfcc",
      "m1": "به خاک افگنم تنش ای شهریار",
      "m2": "مگر بر دهد گردش روزگار",
      "verse_number": 34
    },
    {
      "id": "e6785a3e-8e96-49d9-b5d2-8d94ac1651f4",
      "m1": "ازو شاد شد شاه و کرد آفرین",
      "m2": "بدادش بدو بارهٔ خویش و زین",
      "verse_number": 35
    },
    {
      "id": "5b8a92e6-09d9-4159-9db5-bbde4420f3a1",
      "m1": "بدو داد ژوپین زهرابدار",
      "m2": "که از آهنین کوه کردی گذار",
      "verse_number": 36
    },
    {
      "id": "b79feb72-607a-427b-97ef-efb96c791d89",
      "m1": "چو شد جادوی زشت ناباکدار",
      "m2": "سوی آن خردمند گرد سوار",
      "verse_number": 37
    },
    {
      "id": "967a70d1-bf01-460d-b641-3d24bbebd739",
      "m1": "چو از دور دیدش برآورد خشم",
      "m2": "پر از خاک روی و پر از خون دو چشم",
      "verse_number": 38
    },
    {
      "id": "d5476c98-562a-4052-b940-c3dfb7074632",
      "m1": "به دست اندرون گرز چون سام یل",
      "m2": "به پیش اندرون کشته چون کوه تل",
      "verse_number": 39
    },
    {
      "id": "989ed929-96ea-4334-b9ff-1a4fb8867305",
      "m1": "نیارست رفتنش بر پیش روی",
      "m2": "ز پنهان همی تاخت بر گرد اوی",
      "verse_number": 40
    },
    {
      "id": "ab7e6b0c-5f3a-49ac-8eff-488efaa07fc4",
      "m1": "بینداخت ژوپین زهرابدار",
      "m2": "ز پنهان بران شاهزاده سوار",
      "verse_number": 41
    },
    {
      "id": "77ff1ac0-65f6-4c81-b39f-d038f3278f0b",
      "m1": "گذاره شد از خسروی جوشنش",
      "m2": "به خون غرقه شد شهریاری تنش",
      "verse_number": 42
    },
    {
      "id": "cb3af456-2f19-4498-8510-27e3e8a5aa24",
      "m1": "ز باره در افتاد پس شهریار",
      "m2": "دریغ آن نکو شاهزاده سوار",
      "verse_number": 43
    },
    {
      "id": "70fcbc61-81b5-4c10-aa7a-947f1447518f",
      "m1": "فرود آمد آن بیدرفش پلید",
      "m2": "سلیحش همه پاک بیرون کشید",
      "verse_number": 44
    },
    {
      "id": "381bad48-6a8b-4c3a-9715-4616155a434e",
      "m1": "سوی شاه چین برد اسپ و کمرش",
      "m2": "درفش سیه افسر پرگهرش",
      "verse_number": 45
    },
    {
      "id": "6a90f2a1-8525-43fa-b22b-d5500c872256",
      "m1": "سپاهش همه بانگ برداشتند",
      "m2": "همی نعره از ابر بگذاشتند",
      "verse_number": 46
    },
    {
      "id": "dc54c0e0-3c96-47cc-94ac-5419e010e4df",
      "m1": "چو گشتاسپ از کوه سر بنگرید",
      "m2": "مر او را بدان رزمگه بر ندید",
      "verse_number": 47
    },
    {
      "id": "608376c8-6408-43f0-a246-3e1ec35f8675",
      "m1": "گمانی برم گفت کان گرد ماه",
      "m2": "که روشن بدی زو همه رزمگاه",
      "verse_number": 48
    },
    {
      "id": "9372b93e-ffc1-436f-b792-723fc7654374",
      "m1": "نبرده برادرم فرخ زریر",
      "m2": "که شیر ژیان آوریدی به زیر",
      "verse_number": 49
    },
    {
      "id": "603555c4-4cb7-4de2-83ed-81a48962c2a1",
      "m1": "فگندست بر باره از تاختن",
      "m2": "بماندند گردان ز انداختن",
      "verse_number": 50
    },
    {
      "id": "0c1be1b8-a825-4154-93af-aad8efbd6743",
      "m1": "نیاید همی بانگ شه زادگان",
      "m2": "مگر کشته شد شاه آزادگان",
      "verse_number": 51
    },
    {
      "id": "4eef6f24-b048-44d7-a17b-8d8e02fe7f09",
      "m1": "هیونی بتازید تا رزمگاه",
      "m2": "به نزدیکی آن درفش سیاه",
      "verse_number": 52
    },
    {
      "id": "38743aee-d343-416e-88ed-28b18f627fc4",
      "m1": "ببینید کان شاه من چون شدست",
      "m2": "کم از درد او دل پر از خون شدست",
      "verse_number": 53
    },
    {
      "id": "c7b30f28-57b3-4058-bf7d-423352179b63",
      "m1": "بدین اندرون بود شاه جهان",
      "m2": "که آمد یکی خون ز دیده چکان",
      "verse_number": 54
    },
    {
      "id": "80798ce8-9988-4e1e-94cd-c3d284fd4b52",
      "m1": "به شاه جهان گفت ماه ترا",
      "m2": "نگهدار تاج و سپاه ترا",
      "verse_number": 55
    },
    {
      "id": "05bea50a-42ff-437f-b081-799dacb623e2",
      "m1": "جهان پهلوان آن زریر سوار",
      "m2": "سواران ترکان بکشتند زار",
      "verse_number": 56
    },
    {
      "id": "3cacbc68-62c8-4dff-a538-d2f1212b8a66",
      "m1": "سر جادوان جهان بیدرفش",
      "m2": "مر او را بیفگند و برد آن درفش",
      "verse_number": 57
    },
    {
      "id": "457de80e-aa39-4a6b-9658-d6f8ced7158b",
      "m1": "چو آگاهی کشتن او رسید",
      "m2": "به شاه جهانجوی و مرگش بدید",
      "verse_number": 58
    },
    {
      "id": "63ba4465-1cb1-4095-bc9e-a0f7a94d44dc",
      "m1": "همه جامه تا پای بدرید پاک",
      "m2": "بران خسروی تاج پاشید خاک",
      "verse_number": 59
    },
    {
      "id": "078be572-6fcc-4eb1-9c0a-bd96b6e36f95",
      "m1": "همی گفت گشتاسپ کای شهریار",
      "m2": "چراغ دلت را بکشتند زار",
      "verse_number": 60
    },
    {
      "id": "a612d17a-e84e-4afa-9292-8d1894fd8130",
      "m1": "ز پس گفت داننده جاماسپ را",
      "m2": "چه گویم کنون شاه لهراسپ را",
      "verse_number": 61
    },
    {
      "id": "58363111-1722-4ab0-adbe-788eab2f9204",
      "m1": "چگونه فرستم فرسته بدر",
      "m2": "چه گویم بدان پیر گشته پدر",
      "verse_number": 62
    },
    {
      "id": "def4353b-84b2-4d55-bb85-c694c2d2b0ee",
      "m1": "چه گویم چه کردم نگار ترا",
      "m2": "که برد آن نبرده سوار ترا",
      "verse_number": 63
    },
    {
      "id": "fc263206-db8c-4781-8d7c-7096905e5ef1",
      "m1": "دریغ آن گو شاهزاده دریغ",
      "m2": "چو تابنده ماه اندرون شد به میغ",
      "verse_number": 64
    },
    {
      "id": "c64bd0ea-0829-43ad-9631-a1957e0bb08f",
      "m1": "بیارید گلگون لهراسپی",
      "m2": "نهید از برش زین گشتاسپی",
      "verse_number": 65
    },
    {
      "id": "ff4cd7fa-f4c3-438e-b4e1-cd74e93a5343",
      "m1": "بیاراست مر جستن کینش را",
      "m2": "به ورزیدن دین و آیینش را",
      "verse_number": 66
    },
    {
      "id": "37f5496f-6571-43e6-8d05-59588a8be40c",
      "m1": "جهاندیده دستور گفتا به پای",
      "m2": "به کینه شدن مر ترا نیست رای",
      "verse_number": 67
    },
    {
      "id": "c62e0767-9341-4b27-8a64-350e0c970e75",
      "m1": "به فرمان دستور دانای راز",
      "m2": "فرود آمد از باره بنشست باز",
      "verse_number": 68
    },
    {
      "id": "3988fafe-e682-4cd7-bba5-2004d33683c3",
      "m1": "به لشکر بگفتا کدامست شیر",
      "m2": "که باز آورد کین فرخ زریر",
      "verse_number": 69
    },
    {
      "id": "365ca4fa-79fa-470b-b309-f3729430e256",
      "m1": "که پیش افگند باره بر کین اوی",
      "m2": "که باز آورد باره و زین اوی",
      "verse_number": 70
    },
    {
      "id": "c3a1de5b-8da8-4864-a02d-550c5eddb8d0",
      "m1": "پذیرفتن اندر خدای جهان",
      "m2": "پذیرفتن راستان و مهان",
      "verse_number": 71
    },
    {
      "id": "fcef51d9-c660-4027-ab08-7b681cfe22a4",
      "m1": "که هر کز میانه نهد پیش پای",
      "m2": "مر او را دهم دخترم را همای",
      "verse_number": 72
    },
    {
      "id": "0d246fc5-d37e-43be-876f-4bcc1b0747ef",
      "m1": "نجنبید زیشان کس از جای خویش",
      "m2": "ز لشکر نیاورد کس پای پیش",
      "verse_number": 73
    }
  ],
