{
  "id": "4a65d51f-5aa4-41c3-8933-3fecaf12c7aa",
  "title": "بخش ۲۵ - سخن دقیقی",
  "verses": [
    {
      "id": "67aa4e66-778d-4163-9478-4a4a048ee28f",
      "m1": "برآمد بسی روزگاری بدوی",
      "m2": "که خسرو سوی سیستان کرد روی",
      "verse_number": 1
    },
    {
      "id": "429a7b86-821c-49cf-bbe8-36192d4b787f",
      "m1": "که آنجا کند زند و استا روا",
      "m2": "کند موبدان را بدانجا گوا",
      "verse_number": 2
    },
    {
      "id": "341b156f-297f-4f11-8084-75a20caa1f66",
      "m1": "جو آنجا رسید آن گرانمایه شاه",
      "m2": "پذیره شدش پهلوان سپاه",
      "verse_number": 3
    },
    {
      "id": "379eec46-4c22-4d94-8c21-b743223b9c90",
      "m1": "شه نیمروز آنک رستمش نام",
      "m2": "سوار جهاندیده همتای سام",
      "verse_number": 4
    },
    {
      "id": "0fad4fa2-4a2f-4c88-8860-f75b0482f943",
      "m1": "ابا پیر دستان که بودش پدر",
      "m2": "ابا مهتران و گزینان در",
      "verse_number": 5
    },
    {
      "id": "472cfd2b-3e17-4719-961a-2957f6a0df25",
      "m1": "به شادی پذیره شدندش به راه",
      "m2": "ازو شادمان گشت فرخنده شاه",
      "verse_number": 6
    },
    {
      "id": "c3f40617-f504-4ec8-9f53-a243487163c8",
      "m1": "به زاولش بردند مهمان خویش",
      "m2": "همه بندهوار ایستادند پیش",
      "verse_number": 7
    },
    {
      "id": "c7a30869-5c95-4b35-b9b5-efbfa054a5b0",
      "m1": "وزو زند و کشتی بیاموختند",
      "m2": "ببستند و آذر برافروختند",
      "verse_number": 8
    },
    {
      "id": "1ec21e6c-9ce0-4be9-b378-505c38de0426",
      "m1": "برآمد برین میهمانی دو سال",
      "m2": "همی خورد گشتاسپ با پور زال",
      "verse_number": 9
    },
    {
      "id": "52f9cf4d-4cf7-4655-99ae-064ea08c0c41",
      "m1": "به هرجا کجا شهریاران بدند",
      "m2": "ازان کار گشتاسپ آگه شدند",
      "verse_number": 10
    },
    {
      "id": "eec9639e-c7c0-471d-8a3d-88be2fe6ce33",
      "m1": "که او مر سر پهلوان را ببست",
      "m2": "تن پیل وارش به آهن بخست",
      "verse_number": 11
    },
    {
      "id": "d11f0c8f-eccf-4f4a-9aee-50778a16fc05",
      "m1": "به زاولستان شد به پیغمبری",
      "m2": "که نفرین کند بر بت آزری",
      "verse_number": 12
    },
    {
      "id": "2463f906-bf22-4c18-bfe4-1e0c4a2ab553",
      "m1": "بگشتند یکسر ز فرمان شاه",
      "m2": "بهم برشکستند پیمان شاه",
      "verse_number": 13
    },
    {
      "id": "9c92d409-8e37-4218-863d-51e91f5bd4e9",
      "m1": "چو آگاهی آمد به بهمن که شاه",
      "m2": "ببستست آن شیر را بیگناه",
      "verse_number": 14
    },
    {
      "id": "d8adfada-117a-48c7-9887-e8f90947fa4d",
      "m1": "نبرده گزینان اسفندیار",
      "m2": "ازانجا برفتند تیماردار",
      "verse_number": 15
    },
    {
      "id": "8d3ff832-afb9-4e98-8a06-f23efe1bf54f",
      "m1": "همی داشتند از سپه دست باز",
      "m2": "پس اندر گرفتند راه دراز",
      "verse_number": 16
    },
    {
      "id": "e678e02f-3050-4c23-929f-74b879436398",
      "m1": "به پیش گو اسفندیار آمدند",
      "m2": "کیانزادگان شیروار آمدند",
      "verse_number": 17
    },
    {
      "id": "f2241151-f344-4af9-a91d-06da0ba9a584",
      "m1": "پدر را به رامش همی داشتند",
      "m2": "به زندانش تنها بنگذاشتند",
      "verse_number": 18
    },
    {
      "id": "4af72c82-85ef-4300-99d1-a59c1f1e2a99",
      "m1": "پس آگاهی آمد به سالار چین",
      "m2": "که شاه از گمان اندرآمد به کین",
      "verse_number": 19
    },
    {
      "id": "da8dad9f-d06e-42cd-b63f-572e14b40cb7",
      "m1": "برآشفت خسرو به اسفندیار",
      "m2": "به زندان و بندش فرستاد خوار",
      "verse_number": 20
    },
    {
      "id": "93dc535b-d647-4047-92e8-ae29f4aa160e",
      "m1": "خود از بلخ زی زابلستان کشید",
      "m2": "بیابان گذارید و سیحون بدید",
      "verse_number": 21
    },
    {
      "id": "c3bba43d-478d-43f1-91bb-f1328162874f",
      "m1": "به زاول نشستست مهمان زال",
      "m2": "برین روزگاران برآمد دو سال",
      "verse_number": 22
    },
    {
      "id": "91f494e6-546c-4277-9619-fb1521ba8df0",
      "m1": "به بلخ اندرونست لهراسپ شاه",
      "m2": "نماندست از ایرانیان و سپاه",
      "verse_number": 23
    },
    {
      "id": "304157bf-362a-43af-b9d8-2bd1b7a71919",
      "m1": "مگر هفتصد مرد آتش پرست",
      "m2": "هه پیش آذر برآورده دست",
      "verse_number": 24
    },
    {
      "id": "4d66a929-38e1-44b4-8360-ced0575b1fd6",
      "m1": "جز ایشان به بلخ اندرون نیست کس",
      "m2": "از آهنگداران همینند بس",
      "verse_number": 25
    },
    {
      "id": "b583f0f0-2fa9-4c36-9133-bd1e71fe1565",
      "m1": "مگر پاسبانان کاخ همای",
      "m2": "هلا زود برخیز و چندین مپای",
      "verse_number": 26
    },
    {
      "id": "27bd6e64-5967-40bd-96de-b8fef50af56c",
      "m1": "مهان را همه خواند شاه چگل",
      "m2": "ابر جنگ لهراسپشان داد دل",
      "verse_number": 27
    },
    {
      "id": "d530f5c2-cc14-44d9-a9d8-ddaa860f672f",
      "m1": "بدانید گفتا که گشتاسپ شاه",
      "m2": "سوی نیمروز او سپردست راه",
      "verse_number": 28
    },
    {
      "id": "0805651d-1a96-49e3-b3aa-3455501e0536",
      "m1": "به زاول نشستست با لشکرش",
      "m2": "سواری نه اندر همه کشورش",
      "verse_number": 29
    },
    {
      "id": "bc94b012-45e9-4c40-9971-31e113903b5c",
      "m1": "کنونست هنگام کین خواستن",
      "m2": "بباید بسیچید و آراستن",
      "verse_number": 30
    },
    {
      "id": "94c48d2e-c267-4371-91e5-0070a8226ec7",
      "m1": "پسرش آن گرانمایه اسفندیار",
      "m2": "به بند گراناندرست استوار",
      "verse_number": 31
    },
    {
      "id": "63b9ce08-6732-4ac7-a53e-d639020bcf2e",
      "m1": "کدامست مردی پژوهنده راز",
      "m2": "که پیماید این ژرف راه دراز",
      "verse_number": 32
    },
    {
      "id": "e1a0f139-ec5d-451a-bf81-2a818df28e48",
      "m1": "نراند به راه ایچ و بیره رود",
      "m2": "ز ایران هراسان و آگه رود",
      "verse_number": 33
    },
    {
      "id": "df5b7ac0-c584-4815-b6e8-1cf5538571a7",
      "m1": "یکی جادوی بود نامش ستوه",
      "m2": "گذارنده راه و نهفته پژوه",
      "verse_number": 34
    },
    {
      "id": "95ab50dc-fa77-4a2a-b057-17e0dc32a2e0",
      "m1": "منم گفت آهسته و نامجوی",
      "m2": "چه باید ترا هرچ باید بگوی",
      "verse_number": 35
    },
    {
      "id": "4ef2ab11-cf16-4b42-9aca-29ff0449c744",
      "m1": "شه چینش گفتا به ایران خرام",
      "m2": "نگهبان آتش ببین تا کدام",
      "verse_number": 36
    },
    {
      "id": "5a2d0c31-2429-4e44-9ed5-617b50841540",
      "m1": "پژوهندهٔ راز پیمود راه",
      "m2": "به بلخ گزین شد که بد گاه شاه",
      "verse_number": 37
    },
    {
      "id": "f04aab76-61b0-4684-a6c8-6f74e201850d",
      "m1": "ندید اندرون شاه گشتاسپ را",
      "m2": "پرستندهای دید و لهراسپ را",
      "verse_number": 38
    },
    {
      "id": "3d298521-b7d1-40e9-a750-1bb0728486ac",
      "m1": "بشد همچنان پیش خاقان بگفت",
      "m2": "به رخ پیش او بر زمین را برفت",
      "verse_number": 39
    },
    {
      "id": "39496a10-9e6b-4eb9-883c-2a3d854f55be",
      "m1": "چو ارجاسپ آگاه شد شاد گشت",
      "m2": "از اندوه دیرینه آزاد گشت",
      "verse_number": 40
    },
    {
      "id": "e9b297d5-38c3-41f2-991d-bf40cb6bd207",
      "m1": "سر آن را همه خواند و گفتا روید",
      "m2": "سپاه پراگنده گرد آورید",
      "verse_number": 41
    },
    {
      "id": "4d392341-5978-4dd9-98e3-f96912664963",
      "m1": "برفتند گردان لشکر همه",
      "m2": "به کوه و بیابان و جای رمه",
      "verse_number": 42
    },
    {
      "id": "6de017d2-b5c6-4d51-92a5-9459ad1ca5d1",
      "m1": "بدو باز خواندند لشکرش را",
      "m2": "گزیده سواران کشورش را",
      "verse_number": 43
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 43
  }
}