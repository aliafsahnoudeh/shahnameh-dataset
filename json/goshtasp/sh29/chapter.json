{
  "id": "b1c44bea-bd38-4da1-801b-9b92f846340b",
  "title": "بخش ۲۹",
  "verses": [
    {
      "id": "f806b62f-ae0e-4158-a895-e4fe41972f26",
      "m1": "سرانجام گشتاسپ بنمود پشت",
      "m2": "بدانگه که شد روزگارش درشت",
      "verse_number": 1
    },
    {
      "id": "610e39b8-9000-4298-bad0-7061da6d9ef1",
      "m1": "پس اندر دو منزل همی تاختند",
      "m2": "مر او را گرفتن همی ساختند",
      "verse_number": 2
    },
    {
      "id": "ddcd61e4-914d-4bb2-822a-48bb57dd63d7",
      "m1": "یکی کوه پیش آمدش پرگیا",
      "m2": "بدو اندرون چشمه و آسیا",
      "verse_number": 3
    },
    {
      "id": "390d5b29-592a-4e83-ab7d-008bd2795cf7",
      "m1": "که بر گرد آن کوه یک راه بود",
      "m2": "وزان راه گشتاسپ آگاه بود",
      "verse_number": 4
    },
    {
      "id": "44352ab1-c86e-488d-b098-b6e87817ec1e",
      "m1": "جهاندار گشتاسپ و یکسر سپاه",
      "m2": "سوی کوه رفتند ز آوردگاه",
      "verse_number": 5
    },
    {
      "id": "00e7b5a5-5328-4c0c-b586-6099127aea5f",
      "m1": "چو ارجاسپ با لشکر آنجا رسید",
      "m2": "بگردید و بر کوه راهی ندید",
      "verse_number": 6
    },
    {
      "id": "6eda7be6-f30d-4127-873d-fa98fde4bdce",
      "m1": "گرفتند گرداندرش چار سوی",
      "m2": "چو بیچاره شد شاه آزادهخوی",
      "verse_number": 7
    },
    {
      "id": "a2b6fc95-0bac-45c2-a394-bd9c8fa9bc5d",
      "m1": "ازان کوهسار آتش افروختند",
      "m2": "بدان خاره بر خار میسوختند",
      "verse_number": 8
    },
    {
      "id": "5995fd1a-0585-41e1-b2e7-e1e2e1b8f078",
      "m1": "همی کشت هر مهتری بارگی",
      "m2": "نهاند دلها به بیچارگی",
      "verse_number": 9
    },
    {
      "id": "7891bf2e-588f-43c4-b182-b290df8c7e97",
      "m1": "چو لشکر چنان گردشان برگرفت",
      "m2": "کی خوش منش دست بر سر گرفت",
      "verse_number": 10
    },
    {
      "id": "e40e7b94-6ffc-414f-b94b-3f796c00a8cd",
      "m1": "جهاندیده جاماسپ را پیش خواند",
      "m2": "ز اختر فراوان سخنها براند",
      "verse_number": 11
    },
    {
      "id": "3d6b9251-68c5-4c25-b55b-1c555f3e9803",
      "m1": "بدو گفت کز گردش آسمان",
      "m2": "بگوی آنچ دانی و پنهان ممان",
      "verse_number": 12
    },
    {
      "id": "1f4f27c0-ef1e-4867-b9fc-cb1fdcfe75bd",
      "m1": "که باشد بدین بد مرا دستگیر",
      "m2": "ببایدت گفتن همه ناگزیر",
      "verse_number": 13
    },
    {
      "id": "6a5806f8-943f-4906-9c1c-d59bc2c96758",
      "m1": "چو بشنید جاماسپ بر پای خاست",
      "m2": "بدو گفت کای خسرو داد و راست",
      "verse_number": 14
    },
    {
      "id": "7489a237-52ad-4c9c-92fc-645824ffa502",
      "m1": "اگر شاه گفتار من بشنود",
      "m2": "بدین گردش اختران بگرود",
      "verse_number": 15
    },
    {
      "id": "5dbcc372-f0c0-43ff-8ffd-cd1a1c7067f7",
      "m1": "بگویم بدو هرچ دانم درست",
      "m2": "ز من راستی جوی شاها نخست",
      "verse_number": 16
    },
    {
      "id": "af062e8b-1501-4daf-8ecf-ed1af4093b58",
      "m1": "بدو گفت شاه آنچ دانی بگوی",
      "m2": "که هم راست گویی و هم راهجوی",
      "verse_number": 17
    },
    {
      "id": "980e54bb-8835-44d1-b214-4f624c151ca7",
      "m1": "بدو گفت جاماسپ کای شهریار",
      "m2": "سخن بشنو از من یکی هوشیار",
      "verse_number": 18
    },
    {
      "id": "3fdc0876-b38c-4e2d-babc-3477aa50e27c",
      "m1": "تو دانی که فرزندت اسفندیار",
      "m2": "همی بند ساید به بد روزگار",
      "verse_number": 19
    },
    {
      "id": "847eb871-44a0-4a63-9278-411c9957b105",
      "m1": "اگر شاه بگشاید او را ز بند",
      "m2": "نماند برین کوهسار بلند",
      "verse_number": 20
    },
    {
      "id": "bba4f515-3209-490b-9d0e-3d4eb6a5de76",
      "m1": "بدو گفت گشتاسپ کای راستگوی",
      "m2": "بجز راستی نیست ایچ آرزوی",
      "verse_number": 21
    },
    {
      "id": "ba752d38-e0ee-4678-80a1-1f2fb97ac5c0",
      "m1": "به جاماسپ گفت ای خردمند مرد",
      "m2": "مرا بود ازان کار دل پر ز درد",
      "verse_number": 22
    },
    {
      "id": "b7cd6b65-f345-4625-b275-52b2986b8e46",
      "m1": "که اورا ببستم بران بزمگاه",
      "m2": "به گفتار بدخواه و او بیگناه",
      "verse_number": 23
    },
    {
      "id": "baf49a0b-0463-4b32-9959-d4a3e16705f2",
      "m1": "همانگاه من زان پشیمان شدم",
      "m2": "دلم خسته بد سوی درمان شدم",
      "verse_number": 24
    },
    {
      "id": "2364bf7f-ad7a-4668-bc6b-350e00b5f6a0",
      "m1": "گر او را ببینم برین رزمگاه",
      "m2": "بدو بخشم این تاج و تخت و کلاه",
      "verse_number": 25
    },
    {
      "id": "afe85021-8888-4ea3-b1a6-8693e8162d89",
      "m1": "که یارد شدن پیش آن ارجمند",
      "m2": "رهاند مران بیگنه را ز بند",
      "verse_number": 26
    },
    {
      "id": "e8ba5ac3-3369-4b11-a883-1d2ccf2117fb",
      "m1": "بدو گفت جاماسپ کای شهریار",
      "m2": "منم رفتنی کاین سخن نیست خوار",
      "verse_number": 27
    },
    {
      "id": "6c96b0ad-f8e9-48ff-975b-5003b37e691e",
      "m1": "به جاماسپ شاه جهاندار گفت",
      "m2": "که با تو همیشه خرد باد جفت",
      "verse_number": 28
    },
    {
      "id": "39b01ae1-48f4-46f7-952c-2afe27a80224",
      "m1": "برو وز منش ده فراوان درود",
      "m2": "شب تیره ناگاه بگذر ز رود",
      "verse_number": 29
    },
    {
      "id": "a3d83533-0c6c-4e89-859d-3351b929a0b0",
      "m1": "بگویش که آنکس که بیداد کرد",
      "m2": "بشد زین جهان با دلی پر ز درد",
      "verse_number": 30
    },
    {
      "id": "bd3da669-e604-496a-8ee8-449586c22e6d",
      "m1": "اگر من برفتم بگفت کسی",
      "m2": "که بهره نبودش ز دانش بسی",
      "verse_number": 31
    },
    {
      "id": "f7ba4654-7581-4458-b5c3-9229d6cf5bd4",
      "m1": "چو بیداد کردم بسیچم همی",
      "m2": "وزان کردهٔ خویش پیچم همی",
      "verse_number": 32
    },
    {
      "id": "963acd36-ed50-4cdc-a0bc-9b8fcdc39cca",
      "m1": "کنون گر بیایی دل از کینه پاک",
      "m2": "سر دشمنان اندر آری به خاک",
      "verse_number": 33
    },
    {
      "id": "8be0afa3-651c-4168-8e34-ceb2f7414178",
      "m1": "وگرنه شد این پادشاهی و تخت",
      "m2": "ز بن برکنند این کیانی درخت",
      "verse_number": 34
    },
    {
      "id": "e9231e99-5937-4163-93e5-93848b67c196",
      "m1": "چو آیی سپارم ترا تاج و گنج",
      "m2": "ز چیزی که من گرد کردم به رنج",
      "verse_number": 35
    },
    {
      "id": "b8b92054-de3f-41f9-aa1b-444f1bb30d1e",
      "m1": "بدین گفته یزدان گوای منست",
      "m2": "چو جاماسپ کو رهنمای منست",
      "verse_number": 36
    },
    {
      "id": "61dc2e01-8ae6-4e73-b603-589fd34cae2c",
      "m1": "بپوشید جاماسپ توزی قبای",
      "m2": "فرود آمد از کوه بیرهنمای",
      "verse_number": 37
    },
    {
      "id": "373e052b-765b-4f0b-b2e5-ebe9f8408412",
      "m1": "به سر بر نهاده کلاه دو پر",
      "m2": "برآیین ترکان ببسته کمر",
      "verse_number": 38
    },
    {
      "id": "0f7f5776-09a9-4c42-b054-79b83367afc4",
      "m1": "یکی اسپ ترکی بیاورد پیش",
      "m2": "ابر اسپ آلت ز اندازه بیش",
      "verse_number": 39
    },
    {
      "id": "b11d8b27-c63e-428c-a6e0-6478688cf943",
      "m1": "نشست از بر باره و آمد به زیر",
      "m2": "که بد مرد شایسته بر سان شیر",
      "verse_number": 40
    },
    {
      "id": "1a2bab9c-cd83-4725-be0a-07c3754ac5bc",
      "m1": "هرانکس که او را بدیدی به راه",
      "m2": "بپرسیدی او را ز توران سپاه",
      "verse_number": 41
    },
    {
      "id": "19050a12-65dd-436c-80cc-8fe554b209b9",
      "m1": "به آواز ترکی سخن راندی",
      "m2": "بگفتی بدان کس که او خواندی",
      "verse_number": 42
    },
    {
      "id": "8ada0a6e-db40-406e-a1d0-8781832e2e39",
      "m1": "ندانستی او را کسی حال و کار",
      "m2": "بگفتی به ترکی سخن هوشیار",
      "verse_number": 43
    },
    {
      "id": "d00607c3-bb11-4bdf-b1a3-7a8b18e31acb",
      "m1": "همی راند باره به کردار باد",
      "m2": "چنین تا بیامد بر شاه زاد",
      "verse_number": 44
    },
    {
      "id": "0b7f82d4-e35d-4935-a053-7b7ea218cbaf",
      "m1": "خرد یافته چون بیامد به دشت",
      "m2": "شب تیره از لشکر اندر گذشت",
      "verse_number": 45
    },
    {
      "id": "aa06622f-5534-42ac-b23f-c45621f4371d",
      "m1": "چو آمد به نزد دژ گنبدان",
      "m2": "رهانید خود را ز دست بدان",
      "verse_number": 46
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 46
  }
}