{
  "id": "3c0a0976-f536-418f-b29d-9ceea0e3fbdf",
  "title": "بخش ۱۹ - سخن دقیقی",
  "verses": [
    {
      "id": "f460bdc5-3236-4040-a73e-6bc73bf6811c",
      "m1": "چو ترکان بدیدند کارجاسپ رفت",
      "m2": "همی آید از هر سوی تیغ تفت",
      "verse_number": 1
    },
    {
      "id": "082c95a2-2a28-41af-bd9c-e7133586f374",
      "m1": "همه سرکشانشان پیاده شدند",
      "m2": "به پیش گو اسفندیار آمدند",
      "verse_number": 2
    },
    {
      "id": "1dc1e9b5-bf3b-46dc-aaef-f774208ca6a3",
      "m1": "کمانچای چاچی بینداختند",
      "m2": "قبای نبردی برون آختند",
      "verse_number": 3
    },
    {
      "id": "ed64772c-6bff-4378-87ed-d09f6f165f28",
      "m1": "به زاریش گفتند گر شهریار",
      "m2": "دهد بندگان را به جان زینهار",
      "verse_number": 4
    },
    {
      "id": "4d36117a-fd95-49fd-84f9-7198494a72a3",
      "m1": "بدین اندر آییم و خواهش کنیم",
      "m2": "همه آذران را نیایش کنیم",
      "verse_number": 5
    },
    {
      "id": "9cb55822-7e85-4948-8803-fde1a262bb5e",
      "m1": "ازیشان چو بشنید اسفندیار",
      "m2": "به جان و به تن دادشان زینهار",
      "verse_number": 6
    },
    {
      "id": "f9e879d0-7938-4d01-b4a3-cf330131caf3",
      "m1": "بران لشگر گشن آواز داد",
      "m2": "گو نامبردار فرخنژاد",
      "verse_number": 7
    },
    {
      "id": "f87273d5-3403-4057-ae81-52bfd77d73ac",
      "m1": "که این نامداران ایرانیان",
      "m2": "بگردید زین لشکر چینیان",
      "verse_number": 8
    },
    {
      "id": "05a8c384-2736-4777-9ce5-3a66142421a8",
      "m1": "کنون کاین سپاه عدو گشت پست",
      "m2": "ازین سهم و کشتن بدارید دست",
      "verse_number": 9
    },
    {
      "id": "32f5ba7f-be42-4cbb-9f06-0f7bb2912f41",
      "m1": "که بس زاروارند و بیچارهوار",
      "m2": "دهید این سگان را به جان زینهار",
      "verse_number": 10
    },
    {
      "id": "a77f1c92-732d-4838-85b7-4f6091c7e7f2",
      "m1": "بدارید دست از گرفتن کنون",
      "m2": "مبندید کس را مریزید خون",
      "verse_number": 11
    },
    {
      "id": "b37e1203-d9f0-4746-99fc-f70a1a4e31e8",
      "m1": "متازید و این کشتگان مسپرید",
      "m2": "بگردید و این خستگان بشمرید",
      "verse_number": 12
    },
    {
      "id": "b22bd0f2-0dab-4fee-b866-c7c93b5e5e40",
      "m1": "مگیریدشان بهر جان زریر",
      "m2": "بر اسپان جنگی مپایید دیر",
      "verse_number": 13
    },
    {
      "id": "40cb8064-e27a-402f-ad3b-df4240108a82",
      "m1": "چو لشکر شنیدند آواز اوی",
      "m2": "شدند از بر خستگان بارزوی",
      "verse_number": 14
    },
    {
      "id": "4ae7bfae-b07b-49f3-a2b3-ee0ea7a6dbcc",
      "m1": "به لشکرگه خود فرود آمدند",
      "m2": "به پیروز گشتن تبیره زدند",
      "verse_number": 15
    },
    {
      "id": "d4c6a112-9c45-41f8-9c7a-cfe49661a348",
      "m1": "همه شب نخفتند زان خرمی",
      "m2": "که پیروزی بودشان رستمی",
      "verse_number": 16
    },
    {
      "id": "7d689838-a966-49ce-9e63-40d6ca3a3a47",
      "m1": "چو اندر شکست آن شب تیرهگون",
      "m2": "به دشت و بیابان فرو خورد خون",
      "verse_number": 17
    },
    {
      "id": "cb31ddf7-a622-433d-b874-c2888fd0b049",
      "m1": "کی نامور با سران سپاه",
      "m2": "بیامد به دیدار آن رزمگاه",
      "verse_number": 18
    },
    {
      "id": "ae10c8e2-51e8-4ec7-8094-186a29fa16af",
      "m1": "همی گرد آن کشتگان بر بگشت",
      "m2": "کرا دید بگریست و اندر گذشت",
      "verse_number": 19
    },
    {
      "id": "f8db3f99-d97d-47b7-b35a-851d65ddf54b",
      "m1": "برادرش را دید کشته به زار",
      "m2": "به آوردگاهی برافگنده خوار",
      "verse_number": 20
    },
    {
      "id": "94861388-66a3-476a-afb1-2307b71315ed",
      "m1": "چو او را چنان زار و کشته بدید",
      "m2": "همه جامهٔ خسروی بردرید",
      "verse_number": 21
    },
    {
      "id": "b02af863-3f3d-4bff-ae51-382fbc9576c2",
      "m1": "فرود آمد از شولک خوب رنگ",
      "m2": "به ریش خود اندر زده هر دو چنگ",
      "verse_number": 22
    },
    {
      "id": "198dc704-82af-4af3-92c1-9b7974e7fae2",
      "m1": "همی گفت کی شاه گردان بلخ",
      "m2": "همه زندگانی ما کرده تلخ",
      "verse_number": 23
    },
    {
      "id": "692e15d8-f128-4803-8b64-22e26c372831",
      "m1": "دریغا سوارا شها خسروا",
      "m2": "نبرده دلیرا گزیده گوا",
      "verse_number": 24
    },
    {
      "id": "ce7e7ccd-a655-4ed6-9b74-92b7a7b130fd",
      "m1": "ستون منا پردهٔ کشورا",
      "m2": "چراغ جهان افسر لشکرا",
      "verse_number": 25
    },
    {
      "id": "ed9ab9e2-2006-4242-ac10-003bfafe979d",
      "m1": "فرود آمد و برگرفتش ز خاک",
      "m2": "به دست خودش روی بسترد پاک",
      "verse_number": 26
    },
    {
      "id": "455d34c4-0fc8-4869-8f50-e76f5c6aa32d",
      "m1": "به تابوت زرینش اندر نهاد",
      "m2": "تو گفتی زریر از بنه خود نزاد",
      "verse_number": 27
    },
    {
      "id": "1bc1347b-6312-460d-826d-6bc609407a74",
      "m1": "کیان زادگان و جوانان خویش",
      "m2": "به تابوتها در نهادند پیش",
      "verse_number": 28
    },
    {
      "id": "1bbc2dae-ccf5-4e28-8fcc-093c827563ff",
      "m1": "بفرمود تا کشتگان بشمرند",
      "m2": "کسی را که خستست بیرون برند",
      "verse_number": 29
    },
    {
      "id": "0982f3cb-bcd1-4624-bee4-41f32702c6ca",
      "m1": "بگردید بر گرد آن رزمگاه",
      "m2": "به کوه و بیابان و بر دشت و راه",
      "verse_number": 30
    },
    {
      "id": "b7797f14-53df-45bb-900b-2ca6cb49181f",
      "m1": "از ایرانیان کشته بد سیهزار",
      "m2": "ازان هفتصد سرکش و نامدار",
      "verse_number": 31
    },
    {
      "id": "a05de221-3131-4929-bc28-3bd0df4732ab",
      "m1": "هزار و چل از نامور خسته بود",
      "m2": "که از پای پیلان به در جسته بود",
      "verse_number": 32
    },
    {
      "id": "a38a2765-cbcc-4fb0-953c-a8674faae428",
      "m1": "وزان دیگران کشته بد صد هزار",
      "m2": "هزار و صد و شست و سه نامدار",
      "verse_number": 33
    },
    {
      "id": "55750264-5fee-489e-adab-f7c0ae721b04",
      "m1": "ز خسته بدی سه هزار و دویست",
      "m2": "برین جای بر تا توانی مه ایست",
      "verse_number": 34
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 34
  },
  "order_in_parent": 19
}