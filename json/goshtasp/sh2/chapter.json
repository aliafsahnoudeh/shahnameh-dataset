{
  "id": "627e834d-c093-4332-ac22-e2909dd2928b",
  "title": "بخش ۲ - سخن دقیقی",
  "verses": [
    {
      "id": "a0b864c1-8c3a-4864-b2ec-1bfc06ad725b",
      "m1": "چو گشتاسپ را داد لهراسپ تخت",
      "m2": "فرود آمد از تخت و بربست رخت",
      "verse_number": 1
    },
    {
      "id": "b9700f35-309b-4ed4-95b2-a237ce9cf602",
      "m1": "به بلخ گزین شد بران نوبهار",
      "m2": "که یزدان پرستان بدان روزگار",
      "verse_number": 2
    },
    {
      "id": "fe5cb380-72ac-470e-ac06-3fafd40bc6b8",
      "m1": "مران جای را داشتندی چنان",
      "m2": "که مر مکه را تازیان این زمان",
      "verse_number": 3
    },
    {
      "id": "0a3238c1-9d7c-4d20-99d1-d60ee14293a3",
      "m1": "بدان خانه شد شاه یزدان پرست",
      "m2": "فرود آمد از جایگاه نشست",
      "verse_number": 4
    },
    {
      "id": "4c3f08d6-7767-48ed-bdd0-0968b885ea77",
      "m1": "ببست آن در آفرین خانه را",
      "m2": "نماند اندرو خویش و بیگانه را",
      "verse_number": 5
    },
    {
      "id": "f4b0cf50-79cc-4fb0-b5fa-6415ebf8af22",
      "m1": "بپوشید جامهٔ پرستش پلاس",
      "m2": "خرد را چنان کرد باید سپاس",
      "verse_number": 6
    },
    {
      "id": "48f7d36b-2213-4720-96fe-eb51e670d6c8",
      "m1": "بیفگند یاره فرو هشت موی",
      "m2": "سوی روشن دادگر کرد روی",
      "verse_number": 7
    },
    {
      "id": "e5c9c3d9-5b53-4e4b-a84d-1203b0f2d644",
      "m1": "همی بود سی سال پیشش به پای",
      "m2": "برینسان پرستید باید خدای",
      "verse_number": 8
    },
    {
      "id": "c0cd93ac-887e-437c-9b0b-717a1d90b6d4",
      "m1": "نیایش همی کرد خورشید را",
      "m2": "چنان بوده بد راه جمشید را",
      "verse_number": 9
    },
    {
      "id": "9efd6ed9-233d-4f17-b3f3-6b01a6394028",
      "m1": "چو گشتاسپ بر شد به تخت پدر",
      "m2": "که هم فر او داشت و بخت پدر",
      "verse_number": 10
    },
    {
      "id": "10ee5996-dad9-49b5-bf44-8cfa41404e5d",
      "m1": "به سر بر نهاد آن پدر داده تاج",
      "m2": "که زیبنده باشد بر آزاده تاج",
      "verse_number": 11
    },
    {
      "id": "59f530c7-158a-4857-b739-55a7e6733b83",
      "m1": "منم گفت یزدان پرستنده شاه",
      "m2": "مرا ایزد پاک داد این کلاه",
      "verse_number": 12
    },
    {
      "id": "cf290203-707f-4f11-83f4-a40291061f5c",
      "m1": "بدان داد ما را کلاه بزرگ",
      "m2": "که بیرون کنیم از رم میش گرگ",
      "verse_number": 13
    },
    {
      "id": "2a2faa48-240a-40c5-bec8-6085213fd637",
      "m1": "سوی راه یزدان بیازیم چنگ",
      "m2": "بر آزاده گیتی نداریم تنگ",
      "verse_number": 14
    },
    {
      "id": "8c7da275-efcd-423e-a414-bbcade63d748",
      "m1": "چو آیین شاهان بجای آوریم",
      "m2": "بدان را به دین خدای آوریم",
      "verse_number": 15
    },
    {
      "id": "2bde134e-7cca-4a42-934b-13d3904ab1b5",
      "m1": "یکی داد گسترد کز داد اوی",
      "m2": "ابا گرگ میش آب خوردی به جوی",
      "verse_number": 16
    },
    {
      "id": "71d8e91f-3d87-4906-81d1-7b7d10e0907e",
      "m1": "پس آن دختر نامور قیصرا",
      "m2": "که ناهید بد نام آن دخترا",
      "verse_number": 17
    },
    {
      "id": "93e8a6c3-7630-4d34-b6ce-564916524dc2",
      "m1": "کتایونش خواندی گرانمایه شاه",
      "m2": "دو فرزندش آمد چو تابنده ماه",
      "verse_number": 18
    },
    {
      "id": "b8084593-f427-4422-9e77-62dd659842f9",
      "m1": "یکی نامور فرخ اسفندیار",
      "m2": "شه کارزاری نبرده سوار",
      "verse_number": 19
    },
    {
      "id": "990e521a-716d-4fa3-a028-dacdbae20c50",
      "m1": "پشوتن دگر گرد شمشیر زن",
      "m2": "شه نامبردار لشکرشکن",
      "verse_number": 20
    },
    {
      "id": "d221cce6-53c3-4bdd-bcc9-ea45ea9efcfa",
      "m1": "چو گیتی بران شاه نو راست شد",
      "m2": "فریدون دیگر همی خواست شد",
      "verse_number": 21
    },
    {
      "id": "3bd00430-9ccf-41a4-b481-301441483297",
      "m1": "گزیدش بدادند شاهان همه",
      "m2": "نشستن دل نیکخواهان همه",
      "verse_number": 22
    },
    {
      "id": "36e67c92-200c-4ea2-9330-6df774aa9976",
      "m1": "مگر شاه ارجاسپ توران خدای",
      "m2": "که دیوان بدندی به پیشش به پای",
      "verse_number": 23
    },
    {
      "id": "c8461463-9bdf-4f87-8800-dcf4a3ea9507",
      "m1": "گزیتش نپذرفت و نشنید پند",
      "m2": "اگر پند نشنید زو دید بند",
      "verse_number": 24
    },
    {
      "id": "d5f70d77-2d64-41cc-a98a-36507c94818a",
      "m1": "وزو بستدی نیز هر سال باژ",
      "m2": "چرا داد باید به هامال باژ",
      "verse_number": 25
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 25
  },
