{
  "id": "fbd20c59-c530-4d8f-8ab3-d981155e4ab2",
  "title": "بخش ۲۸",
  "verses": [
    {
      "id": "27b60351-3e62-4c55-8575-eb7eb367235e",
      "m1": "زنی بود گشتاسپ را هوشمند",
      "m2": "خردمند وز بد زبانش به بند",
      "verse_number": 1
    },
    {
      "id": "437e9cc5-849d-4b1f-b3c2-22937a24e732",
      "m1": "ز آخر چمان بارهای برنشست",
      "m2": "به کردار ترکان میان را ببست",
      "verse_number": 2
    },
    {
      "id": "c58cbf8d-e23d-4a91-b291-03ac491cc70c",
      "m1": "از ایران ره سیستان برگرفت",
      "m2": "ازان کارها مانده اندر شگفت",
      "verse_number": 3
    },
    {
      "id": "8115e5dd-ad62-41ae-a55e-c22343d9a09a",
      "m1": "نخفتی به منزل چو برداشتی",
      "m2": "دو روزه به یک روزه بگذاشتی",
      "verse_number": 4
    },
    {
      "id": "d3a9a2e7-024b-4779-be0c-5201f780402d",
      "m1": "چنین تا به نزدیک گشتاسپ شد",
      "m2": "به آگاهی درد لهراسپ شد",
      "verse_number": 5
    },
    {
      "id": "6f48fd95-6835-4d93-9563-7e54057c7c83",
      "m1": "بدو گفت چندین چرا ماندی",
      "m2": "خود از بخل بامی چرا راندی",
      "verse_number": 6
    },
    {
      "id": "420b7b0b-ad41-45fc-9efe-741589123abd",
      "m1": "سپاهی ز ترکان بیامد به بلخ",
      "m2": "که شد مردم بلخ را روز تلخ",
      "verse_number": 7
    },
    {
      "id": "928eb702-048c-4f0c-987f-91b641e52c1f",
      "m1": "همه بلخ پر غارت و کشتن است",
      "m2": "از ایدر ترا روی برگشتن است",
      "verse_number": 8
    },
    {
      "id": "cc5ad042-6e0e-4316-b67c-4f6e52bba7ca",
      "m1": "بدو گفت گشتاسپ کین غم چراست",
      "m2": "به یک تاختن درد و ماتم چراست",
      "verse_number": 9
    },
    {
      "id": "f91e0184-c8dc-427c-b859-7be25375f0de",
      "m1": "چو من با سپاه اندرآیم ز جای",
      "m2": "همه کشور چین ندارند پای",
      "verse_number": 10
    },
    {
      "id": "fb68d8c3-723b-4396-b98b-bef0f176e6af",
      "m1": "چنین پاسخ آورد کاین خود مگوی",
      "m2": "که کای بزرگ آمدستت به روی",
      "verse_number": 11
    },
    {
      "id": "15aa55f0-3d94-4f20-9208-b4b14370a4c7",
      "m1": "شهنشاه لهراسپ را پیش بلخ",
      "m2": "بکشتند و شد بلخ را روز تلخ",
      "verse_number": 12
    },
    {
      "id": "1fe835dc-0d77-48fd-8e6d-559fb00982cb",
      "m1": "همان دختران را ببردند اسیر",
      "m2": "چنین کار دشوار آسان مگیر",
      "verse_number": 13
    },
    {
      "id": "6ab27cd0-d7c3-49bc-9783-5aee4bd324ab",
      "m1": "اگر نیستی جز شکست همای",
      "m2": "خردمند را دل نرفتی ز جای",
      "verse_number": 14
    },
    {
      "id": "b947e83e-753c-44a7-bd00-ca529607464d",
      "m1": "وز انجا به نوش آذراندر شدند",
      "m2": "رد و هیربد را بهم برزدند",
      "verse_number": 15
    },
    {
      "id": "bc88eff3-c788-4bcf-9385-01979ce9e185",
      "m1": "ز خونشان فروزنده آذر بمرد",
      "m2": "چنین کار را خوار نتوان شمرد",
      "verse_number": 16
    },
    {
      "id": "60589a74-f899-464d-8f7b-0c94c6845860",
      "m1": "دگر دختر شاه به آفرید",
      "m2": "که باد هوا هرگز او را ندید",
      "verse_number": 17
    },
    {
      "id": "59421c8d-d11b-4d48-bfb3-a6c2c720ddc0",
      "m1": "به خواری ورا زار برداشتند",
      "m2": "برو یاره و تاج نگذاشتند",
      "verse_number": 18
    },
    {
      "id": "f3713eed-fbf0-4d89-af0e-55faa6c0fe4e",
      "m1": "چو بشنید گشتاسپ شد پر ز درد",
      "m2": "ز مژگان ببارید خوناب زرد",
      "verse_number": 19
    },
    {
      "id": "ce2b87ae-6f69-4dbe-9b9c-733e9efe550f",
      "m1": "بزرگان ایرانیان را بخواند",
      "m2": "شنیده سخن پیش ایشان براند",
      "verse_number": 20
    },
    {
      "id": "afbea3f7-3d9d-4631-8c8d-e8561a88a353",
      "m1": "نویسندهٔ نامه را خواند شاه",
      "m2": "بینداخت تاج و بپردخت گاه",
      "verse_number": 21
    },
    {
      "id": "17aaa35b-b2f9-45f0-823f-e9fe792d8ba1",
      "m1": "سواران پراگنده بر هر سوی",
      "m2": "فرستاد نامه به هر پهلوی",
      "verse_number": 22
    },
    {
      "id": "1555c378-632e-4891-89d8-35695a9ca6aa",
      "m1": "که یک تن سر از گل مشورید پاک",
      "m2": "مدارید باک از بلند و مغاک",
      "verse_number": 23
    },
    {
      "id": "7058ebf4-1c60-4a9a-8e50-ab7b612081a1",
      "m1": "ببردند نامه به هر کشوری",
      "m2": "کجا بود در پادشاهی سری",
      "verse_number": 24
    },
    {
      "id": "d0dceb59-54ef-4ad5-9a29-40144aeb528a",
      "m1": "چو آگاه گشتند یکسر سپاه",
      "m2": "برفتند با گرز و رومی کلاه",
      "verse_number": 25
    },
    {
      "id": "4a079027-0e9e-4cb7-a2cf-5b9bb67d685b",
      "m1": "همه یکسره پیش شاه آمدند",
      "m2": "بران نامور بارگاه آمدند",
      "verse_number": 26
    },
    {
      "id": "44629d0f-29f7-4917-8cdd-3ca7406f4b8b",
      "m1": "چو گشتاسپ دید آن سپه بر درش",
      "m2": "سواران جنگاور از کشورش",
      "verse_number": 27
    },
    {
      "id": "b7884d63-dd30-4303-ac8d-5f1ddb8fa184",
      "m1": "درم داد وز سیستان برگرفت",
      "m2": "سوی بلخ بامی ره اندر گرفت",
      "verse_number": 28
    },
    {
      "id": "ee03463e-60cf-4804-81cc-96c2f0f06910",
      "m1": "چو بشنید ارجاسپ کامد سپاه",
      "m2": "جهاندار گشتاسپ با تاج و گاه",
      "verse_number": 29
    },
    {
      "id": "89b34797-3749-4906-9f51-55cae29bf118",
      "m1": "ز دریا به دریا سپه گسترید",
      "m2": "که جایی کسی روی هامون ندید",
      "verse_number": 30
    },
    {
      "id": "afbc04b3-3ed3-4c27-b823-86e97e894bb1",
      "m1": "دو لشکر چو تنگ اندر آمد به گرد",
      "m2": "زمین شد سیاه و هوا لاژورد",
      "verse_number": 31
    },
    {
      "id": "dd25ad56-b864-4a55-9228-853f8239f3e3",
      "m1": "چو هر دو سپه برکشیدند صف",
      "m2": "همه نیزه و تیغ و ژوپین به کف",
      "verse_number": 32
    },
    {
      "id": "dc76ad4b-ec82-400a-9172-e386879e16e2",
      "m1": "ابر میمنه شاه فرشیدورد",
      "m2": "که با شیر درنده جستی نبرد",
      "verse_number": 33
    },
    {
      "id": "a6746769-cf4d-4a42-9493-4a3389c3e63b",
      "m1": "ابر میسره گرد بستور بود",
      "m2": "که شاه و گه رزم چون کوه بود",
      "verse_number": 34
    },
    {
      "id": "88ae1819-8330-4d65-953f-79349bf44be0",
      "m1": "جهاندار گشتاسپ در قلبگاه",
      "m2": "همی کرد هر سو به لشکر نگاه",
      "verse_number": 35
    },
    {
      "id": "19e26cdd-4e1c-48ed-b116-dd89f7fc9bd4",
      "m1": "وزان روی کندر ابر میمنه",
      "m2": "بیامد پس پشت او با بنه",
      "verse_number": 36
    },
    {
      "id": "edc8993f-9d90-4fcd-8ac7-b97d8cc72744",
      "m1": "سوی میسره کهرم تیغزن",
      "m2": "به قلب اندر ارجاسپ با انجمن",
      "verse_number": 37
    },
    {
      "id": "395eaabd-1664-4ac2-81ee-7629aa7570c3",
      "m1": "برآمد ز هر دو سپه بانگ کوس",
      "m2": "زمین آهنین شد هوا آبنوس",
      "verse_number": 38
    },
    {
      "id": "ae3f7868-121e-462d-90bb-4e7e635b38ac",
      "m1": "تو گفتی که گردون بپرد همی",
      "m2": "زمین از گرانی بدرد همی",
      "verse_number": 39
    },
    {
      "id": "4c865ff1-fe96-412c-af35-c2b24db3b542",
      "m1": "ز آواز اسپان و زخم تبر",
      "m2": "همی کوه خارا برآورد پر",
      "verse_number": 40
    },
    {
      "id": "e201d887-74ab-4634-a7c0-feaa1f50c88d",
      "m1": "همه دشت سر بود بیتن به خاک",
      "m2": "سر گرزداران همه چاکچاک",
      "verse_number": 41
    },
    {
      "id": "40299ee0-d28a-4aaf-8a9b-5aa983548917",
      "m1": "درفشیدن تیغ و باران تیر",
      "m2": "خروش یلان بود با دار و گیر",
      "verse_number": 42
    },
    {
      "id": "be32e782-9dba-408b-9e0a-7a287036a57d",
      "m1": "ستاره همی جست راه گریغ",
      "m2": "سپه را همی نامدی جان دریغ",
      "verse_number": 43
    },
    {
      "id": "aaf5386d-0d5a-4efb-bf80-140c99a14505",
      "m1": "سر نیزه و گرز خم داده بود",
      "m2": "همه دشت پر کشته افتاده بود",
      "verse_number": 44
    },
    {
      "id": "5ff771b4-2060-4278-867f-e96e853f72d6",
      "m1": "بسی کوفته زیر باره درون",
      "m2": "کفن سینهٔ شیر و تابوت خون",
      "verse_number": 45
    },
    {
      "id": "d6875dbb-a2aa-48f8-a48f-8f16a22dcb27",
      "m1": "تن بیسران و سر بیتنان",
      "m2": "سواران چو پیلان کفک افگنان",
      "verse_number": 46
    },
    {
      "id": "8a4d1e3a-ae26-40c5-82f2-d38ab1e897e0",
      "m1": "پدر را نبد بر پسر جای مهر",
      "m2": "همی گشت زین گونه گردان سپهر",
      "verse_number": 47
    },
    {
      "id": "9c08edfa-32c3-4d47-b052-3f4d6d4bbfad",
      "m1": "چو بگذشت زین سان سه روز و سه شب",
      "m2": "ز بس بانگ اسپان و جنگ و جلب",
      "verse_number": 48
    },
    {
      "id": "7a85af63-9560-468d-a7dc-f2f97176ff0a",
      "m1": "سراسر چنان گشت آوردگاه",
      "m2": "که از جوش خون لعل شد روی ماه",
      "verse_number": 49
    },
    {
      "id": "cfc19d73-d922-41ec-bb31-eda8c168c6ea",
      "m1": "ابا کهرم تیغزن در نبرد",
      "m2": "برآویخت ناگاه فرشیدورد",
      "verse_number": 50
    },
    {
      "id": "0564505a-8bab-4bdf-929c-820da0ce9f2a",
      "m1": "ز کهرم مران شاه تن خسته شد",
      "m2": "به جان گرچه از دست او رسته شد",
      "verse_number": 51
    },
    {
      "id": "316db095-251f-44c6-bfb2-37202355627a",
      "m1": "از ایران سواران پرخاشجوی",
      "m2": "چنان خسته بردند از پیش اوی",
      "verse_number": 52
    },
    {
      "id": "f9a84e2b-8a4c-4996-b972-ccb2d09aba78",
      "m1": "فراوان ز ایرانیان کشته شد",
      "m2": "ز خون یلان کشور آغشته شد",
      "verse_number": 53
    },
    {
      "id": "f5bb8d35-5ae1-42b8-9879-5f6fe15b9da8",
      "m1": "پسر بود گشتاسپ را سی و هشت",
      "m2": "دلیران کوه و سواران دشت",
      "verse_number": 54
    },
    {
      "id": "38ced280-17b2-4c4b-aa78-45b01c6de0df",
      "m1": "بکشتند یکسر بران رزمگاه",
      "m2": "به یکبارگی تیره شد بخت شاه",
      "verse_number": 55
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 55
  }
}