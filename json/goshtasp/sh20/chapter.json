{
  "id": "1d789b8a-0116-41d9-9b6a-1f7b80993d33",
  "title": "بخش ۲۰ - سخن دقیقی",
  "verses": [
    {
      "id": "c5057a22-51b1-4b7f-93a8-d54accc004dc",
      "m1": "کی نامبردار فرخنده شاه",
      "m2": "سوی گاه باز آمد از رزمگاه",
      "verse_number": 1
    },
    {
      "id": "eec1b4f8-4c50-4668-9a11-07ede7572d9c",
      "m1": "به بستور گفتا که فردا پکاه",
      "m2": "سوی کشور نامور کش سپاه",
      "verse_number": 2
    },
    {
      "id": "01d20c95-109e-4eb1-97f6-bd02e33befe9",
      "m1": "بیامد سپهبد هم از بامداد",
      "m2": "بزد کوس و لشکر بنه برنهاد",
      "verse_number": 3
    },
    {
      "id": "f554ae8b-9c95-409a-b39f-f093e26ac1ce",
      "m1": "به ایران زمین باز کردند روی",
      "m2": "همه خیره دل گشته و جنگجوی",
      "verse_number": 4
    },
    {
      "id": "9845f830-249e-4ab4-81e6-cb25a5a48f68",
      "m1": "همه خستگان را ببردند نیز",
      "m2": "نماندند از خواسته نیز چیز",
      "verse_number": 5
    },
    {
      "id": "f437a7e2-4a73-4915-b44e-47665c5fffd3",
      "m1": "به ایران زمین باز بردندشان",
      "m2": "به دانا پزشکان سپردندشان",
      "verse_number": 6
    },
    {
      "id": "8147bc38-cca1-4d8c-b2a0-b57916f755f8",
      "m1": "چو شاه جهان باز شد بازجای",
      "m2": "به پور مهین داد فرخ همای",
      "verse_number": 7
    },
    {
      "id": "4cdce278-e41a-49c7-a8fe-5e470d55aa9c",
      "m1": "سپه را به بستور فرخنده داد",
      "m2": "عجم را چنین بود آیین و داد",
      "verse_number": 8
    },
    {
      "id": "23cbf652-adcb-4640-951e-9419a888027e",
      "m1": "بدادش از آزادگان ده هزار",
      "m2": "سواران جنگی و نیزه گزار",
      "verse_number": 9
    },
    {
      "id": "689ac5c5-993c-45d2-a2d3-c9896e90cb48",
      "m1": "بفرمود و گفت ای گو رزمسار",
      "m2": "یکی بر پی شاه توران بتاز",
      "verse_number": 10
    },
    {
      "id": "0513fe13-1516-419b-9ba4-b90e9c66e50a",
      "m1": "به ایتاش و خَلُّخ ستان برگذر",
      "m2": "بکش هرک یابی به کین پدر",
      "verse_number": 11
    },
    {
      "id": "c56b6b45-390f-4a66-a42b-b12fc3d6ebbc",
      "m1": "ز هرچیز بایست بردش به کار",
      "m2": "بدادش همه بیمر و بیشمار",
      "verse_number": 12
    },
    {
      "id": "9d09fc2b-cb1b-468f-b260-4f4372f7bcd2",
      "m1": "همآنگاه بستور برد آن سپاه",
      "m2": "و شاه جهان از بر تخت و گاه",
      "verse_number": 13
    },
    {
      "id": "6ec89871-b1ab-417a-92ba-97f402b5fc77",
      "m1": "نشست و کیی تاج بر سر نهاد",
      "m2": "سپه را همه یکسره بار داد",
      "verse_number": 14
    },
    {
      "id": "aca9159b-6930-4b46-b29e-6e334d252ae4",
      "m1": "در گنج بگشاد وز خواسته",
      "m2": "سپه را همه کرد آراسته",
      "verse_number": 15
    },
    {
      "id": "65ba8447-80fe-43dd-961e-a3073c477caa",
      "m1": "سران را همه شهرها داد نیز",
      "m2": "سکی را نماند ایچ ناداده چیز",
      "verse_number": 16
    },
    {
      "id": "ee318250-5648-4264-97db-49d333dae247",
      "m1": "کرا پادشاهی سزا بد بداد",
      "m2": "کرا پایه بایست پایه نهاد",
      "verse_number": 17
    },
    {
      "id": "30e3e939-e516-434a-b5ef-b7ff08e36c7b",
      "m1": "چو اندر خور کارشان داد ساز",
      "m2": "سوی خانهاشان فرستاد باز",
      "verse_number": 18
    },
    {
      "id": "c02e6439-41fe-4f31-ac7d-5c47ea51e0c7",
      "m1": "خرامید بر گاه و باره ببست",
      "m2": "به کاخ شهنشاهی اندر نشست",
      "verse_number": 19
    },
    {
      "id": "f360100d-bcbc-4269-8d7d-694c81b4f1aa",
      "m1": "بفرمود تا آذر افروختند",
      "m2": "برو عود و عنبر همی سوختند",
      "verse_number": 20
    },
    {
      "id": "180e2a57-876b-431c-a277-2166f59686d1",
      "m1": "زمینش بکردند از زر پاک",
      "m2": "همه هیزمش عود و عنبرش خاک",
      "verse_number": 21
    },
    {
      "id": "b1882adf-2c62-4185-b955-838155834bb4",
      "m1": "همه کاخ را کار اندام کرد",
      "m2": "پسش خان گشتاسپیان نام کرد",
      "verse_number": 22
    },
    {
      "id": "25c2027c-e998-45b7-91a0-08deb861f39b",
      "m1": "بفرمود تا بر در گنبدش",
      "m2": "بدادند جاماسپ را موبدش",
      "verse_number": 23
    },
    {
      "id": "9c0d8414-d0e0-4952-95b9-6a4c6daa1c0f",
      "m1": "سوی مرزدارانش نامه نوشت",
      "m2": "که ما را خداوند یافه نهشت",
      "verse_number": 24
    },
    {
      "id": "294f04b3-adc4-4cc2-89ac-cd5207b50761",
      "m1": "شبان شده تیرهمان روز کرد",
      "m2": "کیان را به هر جای پیروز کرد",
      "verse_number": 25
    },
    {
      "id": "23b8d7c5-2b0d-413c-becf-54fd5fa157ff",
      "m1": "به نفرین شد ارجاسپ ناآفرین",
      "m2": "چنین است کار جهان آفرین",
      "verse_number": 26
    },
    {
      "id": "0c93f3d2-0970-442e-bad9-e963190e0af5",
      "m1": "چو پیروزی شاهتان بشنوید",
      "m2": "گزیتی به آذر پرستان دهید",
      "verse_number": 27
    },
    {
      "id": "ece7fc38-ca6a-4cc2-9bde-8c5761eb510d",
      "m1": "چو آگاه شد قیصر آن شاه روم",
      "m2": "که فرخ شد آن شاه و ارجاسپ شوم",
      "verse_number": 28
    },
    {
      "id": "72832846-bb46-4ebd-bdea-22e22505aef8",
      "m1": "فرسته فرستاد با خواسته",
      "m2": "غلامان و اسپان آراسته",
      "verse_number": 29
    },
    {
      "id": "9612e826-50a2-438f-bf6c-a49678693bf6",
      "m1": "شه بتپرستان و رایان هند",
      "m2": "گزیتش بدادند شاهان سند",
      "verse_number": 30
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 30
  }
}