{
  "id": "cb493203-f174-49b0-ab00-ae3d03382f70",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "7d3c70b9-8d78-419e-a102-79ee42c86969",
      "m1": "ازان پس بیاسود لشکر دو روز",
      "m2": "سه دیگر چو بفروخت گیتی فروز",
      "verse_number": 1
    },
    {
      "id": "663d9600-f4b8-4ddb-af0c-ee21d0b1cf0a",
      "m1": "نبد شاه را روزگار نبرد",
      "m2": "به بیچارگی جنگ بایست کرد",
      "verse_number": 2
    },
    {
      "id": "cbe28b30-d90d-43f9-9649-16eb80ba50e5",
      "m1": "ابا لشکر نوذر افراسیاب",
      "m2": "چو دریای جوشان بد و رود آب",
      "verse_number": 3
    },
    {
      "id": "4acdbb68-c347-437a-91d0-d0618a77010c",
      "m1": "خروشیدن آمد ز پردهسرای",
      "m2": "ابا نالهٔ کوس و هندی درای",
      "verse_number": 4
    },
    {
      "id": "ff1c5966-c958-4850-81af-d19846ea38e4",
      "m1": "تبیره برآمد ز درگاه شاه",
      "m2": "نهادند بر سر ز آهن کلاه",
      "verse_number": 5
    },
    {
      "id": "5933fb69-ab3e-4431-a048-f5a7821c45c6",
      "m1": "به پردهسرای رد افراسیاب",
      "m2": "کسی را سر اندر نیامد به خواب",
      "verse_number": 6
    },
    {
      "id": "b2912a09-3b64-44d8-9fc0-98a1265975a3",
      "m1": "همه شب همی لشکر آراستند",
      "m2": "همی تیغ و ژوپین بپیراستند",
      "verse_number": 7
    },
    {
      "id": "4f5ab9bd-1465-4820-a112-2040e3eae842",
      "m1": "زمین کوه تا کوه جوشنوران",
      "m2": "برفتند با گرزهای گران",
      "verse_number": 8
    },
    {
      "id": "365fdd4e-d23b-419a-83de-e14294a337c6",
      "m1": "نبد کوه پیدا ز ریگ و ز شخ",
      "m2": "ز دریا به دریا کشیدند نخ",
      "verse_number": 9
    },
    {
      "id": "b30d1228-df8c-444b-a6f0-dc7e01150c45",
      "m1": "بیاراست قارن به قلب اندرون",
      "m2": "که با شاه باشد سپه را ستون",
      "verse_number": 10
    },
    {
      "id": "84ed1091-987c-4413-8215-d3f92838ac3c",
      "m1": "چپ شاه گرد تلیمان بخاست",
      "m2": "چو شاپور نستوه بر دست راست",
      "verse_number": 11
    },
    {
      "id": "3e08bf4a-447f-486f-954b-e292a0f50615",
      "m1": "ز شبگیر تا خور ز گردون بگشت",
      "m2": "نبد کوه پیدا نه دریا نه دشت",
      "verse_number": 12
    },
    {
      "id": "b5c9d24c-6899-4e42-8d6f-6dcdfa88fca1",
      "m1": "دل تیغ گفتی ببالد همی",
      "m2": "زمین زیر اسپان بنالد همی",
      "verse_number": 13
    },
    {
      "id": "c65f30b1-612a-4e7e-bf19-d36672dd00fc",
      "m1": "چو شد نیزهها بر زمین سایهدار",
      "m2": "شکست اندر آمد سوی مایهدار",
      "verse_number": 14
    },
    {
      "id": "74bdb6f6-246d-4479-8b23-9842a35dcb40",
      "m1": "چو آمد به بخت اندرون تیرگی",
      "m2": "گرفتند ترکان برو چیرگی",
      "verse_number": 15
    },
    {
      "id": "fbccf4b2-3821-4143-a8ad-a0d26980d5f4",
      "m1": "بران سو که شاپور نستوه بود",
      "m2": "پراگنده شد هرک انبوه بود",
      "verse_number": 16
    },
    {
      "id": "ece73c8b-7e62-4218-bfa9-8242b71c99fa",
      "m1": "همی بود شاپور تا کشته شد",
      "m2": "سر بخت ایرانیان گشته شد",
      "verse_number": 17
    },
    {
      "id": "1b904522-c819-48fd-bf78-ee98ed2b2c8e",
      "m1": "از انبوه ترکان پرخاشجوی",
      "m2": "به سوی دهستان نهادند روی",
      "verse_number": 18
    },
    {
      "id": "01cfb1c9-4572-4ca7-b085-f2473edc1256",
      "m1": "شب و روز بد بر گذرهاش جنگ",
      "m2": "برآمد برین نیز چندی درنگ",
      "verse_number": 19
    },
    {
      "id": "4586dfec-d8c7-48cb-a5b1-c26fb6c8714f",
      "m1": "چو نوذر فرو هشت پی در حصار",
      "m2": "برو بسته شد راه جنگ سوار",
      "verse_number": 20
    },
    {
      "id": "367547c6-5e43-4fce-a084-d94473705c68",
      "m1": "سواران بیاراست افراسیاب",
      "m2": "گرفتش ز جنگ درنگی شتاب",
      "verse_number": 21
    },
    {
      "id": "2f754372-5cb9-4431-ac77-bf69c67ef57d",
      "m1": "یکی نامور ترک را کرد یاد",
      "m2": "سپهبد کروخان ویسه نژاد",
      "verse_number": 22
    },
    {
      "id": "0bf944e2-018f-4edb-b53a-b58eae4c419e",
      "m1": "سوی پارس فرمود تا برکشید",
      "m2": "به راه بیابان سر اندر کشید",
      "verse_number": 23
    },
    {
      "id": "5588fa16-e9ce-436c-bfc8-dfa370f03e49",
      "m1": "کزان سو بد ایرانیان را بنه",
      "m2": "بجوید بنه مردم بدتنه",
      "verse_number": 24
    },
    {
      "id": "7025dc5c-6760-41a3-a4d0-b15d446dd8be",
      "m1": "چو قارن شنود آنکه افراسیاب",
      "m2": "گسی کرد لشکر به هنگام خواب",
      "verse_number": 25
    },
    {
      "id": "6cc295b6-15cf-40a2-b2df-8d9674b23e8d",
      "m1": "شد از رشک جوشان و دل کرد تنگ",
      "m2": "بر نوذر آمد بسان پلنگ",
      "verse_number": 26
    },
    {
      "id": "09559a9c-b224-4a63-9e99-06f173bd1f70",
      "m1": "که توران شه آن ناجوانمرد مرد",
      "m2": "نگه کن که با شاه ایران چه کرد",
      "verse_number": 27
    },
    {
      "id": "e50fb683-0066-4430-9615-eef03510d848",
      "m1": "سوی روی پوشیدگان سپاه",
      "m2": "سپاهی فرستاد بی مر به راه",
      "verse_number": 28
    },
    {
      "id": "1e04b19a-a6ed-429f-bdc7-686070e840fe",
      "m1": "شبستان ماگر به دست آورد",
      "m2": "برین نامداران شکست آورد",
      "verse_number": 29
    },
    {
      "id": "6dd80ef1-5bd4-478b-9394-f4d4171924b4",
      "m1": "به ننگ اندرون سر شود ناپدید",
      "m2": "به دنب کروخان بباید کشید",
      "verse_number": 30
    },
    {
      "id": "60d2d583-aeb1-4172-ab2f-81c59702220b",
      "m1": "ترا خوردنی هست و آب روان",
      "m2": "سپاهی به مهر تو دارد روان",
      "verse_number": 31
    },
    {
      "id": "9a6234a8-d748-4f46-be27-6e77b6a200f4",
      "m1": "همی باش و دل را مکن هیچ بد",
      "m2": "که از شهریاران دلیری سزد",
      "verse_number": 32
    },
    {
      "id": "222a992a-1163-4df6-a77e-8e6f75633e61",
      "m1": "کنون من شوم بر پی این سپاه",
      "m2": "بگیرم بریشان ز هر گونه راه",
      "verse_number": 33
    },
    {
      "id": "088ca9e8-467d-4716-ad66-fa8821d3cc8c",
      "m1": "بدو گفت نوذر که این رای نیست",
      "m2": "سپه را چو تو لشکرآرای نیست",
      "verse_number": 34
    },
    {
      "id": "c69f0b7a-4c64-4e17-8492-4692868002e3",
      "m1": "ز بهر بنه رفت گستهم و طوس",
      "m2": "بدانگه که برخاست آوای کوس",
      "verse_number": 35
    },
    {
      "id": "8233a75f-1f23-4f86-9673-83a9068c1dd5",
      "m1": "بدین زودی اندر شبستان رسد",
      "m2": "کند ساز ایشان چنان چون سزد",
      "verse_number": 36
    },
    {
      "id": "0aa6aa0a-093f-4ca2-8fea-9d490a59ba5c",
      "m1": "نشستند بر خوان و می خواستند",
      "m2": "زمانی دل از غم بپیراستند",
      "verse_number": 37
    },
    {
      "id": "e84d079e-1b50-48eb-a2bb-178c548f2bd4",
      "m1": "پس آنگه سوی خان قارن شدند",
      "m2": "همه دیده چون ابر بهمن شدند",
      "verse_number": 38
    },
    {
      "id": "988bfc11-e78d-4e12-94ac-56618ebf1467",
      "m1": "سخن را فگندند هر گونه بن",
      "m2": "بران برنهادند یکسر سخن",
      "verse_number": 39
    },
    {
      "id": "9dbbaf8c-2777-48ca-b055-b45cf5460d78",
      "m1": "که ما را سوی پارس باید کشید",
      "m2": "نباید برین جایگاه آرمید",
      "verse_number": 40
    },
    {
      "id": "8e9f0ab9-16cc-4123-8c5f-2a5bfb937d6e",
      "m1": "چو پوشیده رویان ایران سپاه",
      "m2": "اسیران شوند از بد کینهخواه",
      "verse_number": 41
    },
    {
      "id": "defb5b8f-3f9e-4b4d-b50d-3767679aa27f",
      "m1": "که گیرد بدین دشت نیزه به دست",
      "m2": "کرا باشد آرام و جای نشست",
      "verse_number": 42
    },
    {
      "id": "a158337e-a929-47d1-bfc9-4817a2d6dcf8",
      "m1": "چو شیدوش و کشواد و قارن بهم",
      "m2": "زدند اندرین رای بر بیش و کم",
      "verse_number": 43
    },
    {
      "id": "36cc44cf-9e74-4f68-b02f-a9a0b78204e3",
      "m1": "چو نیمی گذشت از شب دیریاز",
      "m2": "دلیران به رفتن گرفتند ساز",
      "verse_number": 44
    },
    {
      "id": "071ab956-21df-4c05-8a89-74a02658d278",
      "m1": "بدین روی دژدار بد گژدهم",
      "m2": "دلیران بیدار با او بهم",
      "verse_number": 45
    },
    {
      "id": "08014997-f994-426b-b301-b059d382310d",
      "m1": "وزان روی دژ بارمان و سپاه",
      "m2": "ابا کوس و پیلان نشسته به راه",
      "verse_number": 46
    },
    {
      "id": "d2b12012-d1ba-4488-9787-89eb2ac56dc7",
      "m1": "کزو قارن رزمزن خسته بود",
      "m2": "به خون برادر کمربسته بود",
      "verse_number": 47
    },
    {
      "id": "3a3ce5ea-f789-458c-ae47-d2a9214711f6",
      "m1": "برآویخت چون شیر با بارمان",
      "m2": "سوی چاره جستن ندادش زمان",
      "verse_number": 48
    },
    {
      "id": "7facaaef-43e2-4590-a025-ca67dd8c1700",
      "m1": "یکی نیزه زد بر کمربند اوی",
      "m2": "که بگسست بنیاد و پیوند اوی",
      "verse_number": 49
    },
    {
      "id": "7161119e-6879-458d-a2d8-33840eb977bf",
      "m1": "سپه سر به سر دل شکسته شدند",
      "m2": "همه یک ز دیگر گسسته شدند",
      "verse_number": 50
    },
    {
      "id": "c37fdd20-7258-4c4d-b376-208fd33484d8",
      "m1": "سپهبد سوی پارس بنهاد روی",
      "m2": "ابا نامور لشکر جنگجوی",
      "verse_number": 51
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 51
  }
}