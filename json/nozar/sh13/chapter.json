{
  "id": "282a2d5e-4318-4bd1-879e-02ae5c7fe96c",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "0305719f-fdc2-4d34-a21f-d3ee4487bc2a",
      "m1": "چو اغریرث آمد ز آمل به ری",
      "m2": "وزان کارها آگهی یافت کی",
      "verse_number": 1
    },
    {
      "id": "97e7d0ad-b0db-4010-9279-7f8015578d5a",
      "m1": "بدو گفت کاین چیست کانگیختی",
      "m2": "که با شهد حنظل برآمیختی",
      "verse_number": 2
    },
    {
      "id": "166d0b6c-3d67-4009-9c3a-15ef542a8df2",
      "m1": "بفرمودمت کای برادر به کش",
      "m2": "که جای خرد نیست و هنگام هش",
      "verse_number": 3
    },
    {
      "id": "243f7929-feb4-4f3e-8a6a-bb110bf563b1",
      "m1": "به دانش نیاید سر جنگجوی",
      "m2": "نباید به جنگ اندرون آبروی",
      "verse_number": 4
    },
    {
      "id": "474acc81-6335-4666-bf4e-1eca2b6890ce",
      "m1": "سر مرد جنگی خرد نسپرد",
      "m2": "که هرگز نیامیخت کین با خرد",
      "verse_number": 5
    },
    {
      "id": "637f7189-03ab-4feb-b01a-352c165ca7c9",
      "m1": "چنین داد پاسخ به افراسیاب",
      "m2": "که لختی بباید همی شرم و آب",
      "verse_number": 6
    },
    {
      "id": "2bae79f8-696e-4be1-9e50-33e450fa6d4b",
      "m1": "هر آنگه کت آید به بد دسترس",
      "m2": "ز یزدان بترس و مکن بد به کس",
      "verse_number": 7
    },
    {
      "id": "72d59e56-bf2e-4d21-9135-56be1afdc1ae",
      "m1": "که تاج و کمر چون تو بیند بسی",
      "m2": "نخواهد شدن رام با هر کسی",
      "verse_number": 8
    },
    {
      "id": "26d35d39-7fdd-4e26-96bf-b16d51cd3631",
      "m1": "یکی پر ز آتش یکی پرخرد",
      "m2": "خرد با سر دیو کی درخورد",
      "verse_number": 9
    },
    {
      "id": "ef48cef5-e38e-4abe-8223-87fcdb6bfbc4",
      "m1": "سپهبد برآشفت چون پیل مست",
      "m2": "به پاسخ به شمشیر یازید دست",
      "verse_number": 10
    },
    {
      "id": "118fb961-057b-4e21-a6f0-f89b8e09e0e3",
      "m1": "میان برادر به دونیم کرد",
      "m2": "چنان سنگدل ناهشیوار مرد",
      "verse_number": 11
    },
    {
      "id": "a9206fad-07d5-4416-8262-3f067a8a3d21",
      "m1": "چو از کار اغریرث نامدار",
      "m2": "خبر شد به نزدیک زال سوار",
      "verse_number": 12
    },
    {
      "id": "0fce30c9-3a35-4b61-aeef-dcfd164e8876",
      "m1": "چنین گفت کهاکنون سر بخت اوی",
      "m2": "شود تار و ویرانشود تخت اوی",
      "verse_number": 13
    },
    {
      "id": "011a67b3-db7c-41f4-b204-a66c6158b944",
      "m1": "بزد نای رویین و بربست کوس",
      "m2": "بیاراست لشکر چو چشم خروس",
      "verse_number": 14
    },
    {
      "id": "94cfcdc3-9c88-4ab0-893a-2c3236e9f1e8",
      "m1": "سپهبد سوی پارس بنهاد روی",
      "m2": "همیرفت پرخشم و دل کینهجوی",
      "verse_number": 15
    },
    {
      "id": "6a94a6e5-0994-4024-9a8e-391ed0f42185",
      "m1": "ز دریا به دریا همی مرد بود",
      "m2": "رخ ماه و خورشید پر گرد بود",
      "verse_number": 16
    },
    {
      "id": "f9679a8f-6139-47f5-96e4-d7db6db03455",
      "m1": "چو بشنید افراسیاب این سخن",
      "m2": "که دستان جنگی چه افگند بن",
      "verse_number": 17
    },
    {
      "id": "b25adac3-8202-434b-837e-2c8573830a83",
      "m1": "بیاورد لشکر سوی خوار ری",
      "m2": "بیاراست جنگ و بیفشارد پی",
      "verse_number": 18
    },
    {
      "id": "9ffce2cf-680c-429b-a914-e1ae43f88625",
      "m1": "طلایه شب و روز در جنگ بود",
      "m2": "تو گفتی که گیتی بر او تنگ بود",
      "verse_number": 19
    },
    {
      "id": "89d3e27e-6eac-4620-9a7b-9a6f5c69ae4e",
      "m1": "مبارز بسی کشته شد بر دو روی",
      "m2": "همه نامداران پرخاشجوی",
      "verse_number": 20
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 20
  },
