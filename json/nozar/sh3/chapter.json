{
  "id": "034851ad-0395-4300-ad14-92cacdf66bd7",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "5c5c1325-798f-4d98-b9a9-171e8ff59cf2",
      "m1": "چو دشت از گیا گشت چون پرنیان",
      "m2": "ببستند گردان توران میان",
      "verse_number": 1
    },
    {
      "id": "212eedb3-e774-4e6e-af84-656822b9b3bb",
      "m1": "سپاهی بیامد ز ترکان و چین",
      "m2": "هم از گرزداران خاور زمین",
      "verse_number": 2
    },
    {
      "id": "7c866a1c-2a5d-479f-bbba-cecb80454c06",
      "m1": "که آن را میان و کرانه نبود",
      "m2": "همان بخت نوذر جوانه نبود",
      "verse_number": 3
    },
    {
      "id": "22d894d2-e6df-4dbe-a9f2-da2325862785",
      "m1": "چو لشکر به نزدیک جیحون رسید",
      "m2": "خبر نزد پور فریدون رسید",
      "verse_number": 4
    },
    {
      "id": "b2f3cbd1-34ac-486c-b7ea-1bb47bd3e7bb",
      "m1": "سپاه جهاندار بیرون شدند",
      "m2": "ز کاخ همایون به هامون شدند",
      "verse_number": 5
    },
    {
      "id": "42967659-5953-4167-9092-881e4fc7e2a5",
      "m1": "به راه دهستان نهادند روی",
      "m2": "سپهدارشان قارن رزمجوی",
      "verse_number": 6
    },
    {
      "id": "a8a4e40a-bd6c-43bc-a6eb-eccb87ced353",
      "m1": "شهنشاه نوذر پس پشت اوی",
      "m2": "جهانی سراسر پر از گفت و گوی",
      "verse_number": 7
    },
    {
      "id": "f1b358a3-18e2-495b-95dd-b1bb1167358c",
      "m1": "چو لشکر به پیش دهستان رسید",
      "m2": "تو گفتی که خورشید شد ناپدید",
      "verse_number": 8
    },
    {
      "id": "d832a4f0-a6ff-414c-bcb0-41b10dc05cd7",
      "m1": "سراپردهٔ نوذر شهریار",
      "m2": "کشیدند بر دشت پیش حصار",
      "verse_number": 9
    },
    {
      "id": "b0913efc-5e09-4bc4-81f2-c779f7e2a7a9",
      "m1": "خود اندر دهستان نیاراست جنگ",
      "m2": "برین بر نیامد زمانی درنگ",
      "verse_number": 10
    },
    {
      "id": "c6943469-6012-465d-b7e0-5cddd288a729",
      "m1": "که افراسیاب اندر ایران زمین",
      "m2": "دو سالار کرد از بزرگان گزین",
      "verse_number": 11
    },
    {
      "id": "981b67e8-ad7d-4ee3-815a-3978abbb99df",
      "m1": "شماساس و دیگر خزروان گرد",
      "m2": "ز لشکر سواران بدیشان سپرد",
      "verse_number": 12
    },
    {
      "id": "e43ccead-fe27-4beb-90ec-9af3c28b3fb1",
      "m1": "ز جنگ آوران مرد چون سی هزار",
      "m2": "برفتند شایستهٔ کارزار",
      "verse_number": 13
    },
    {
      "id": "3c1632d2-30b7-4873-a7e1-b056bdb11db1",
      "m1": "سوی زابلستان نهادند روی",
      "m2": "ز کینه به دستان نهادند روی",
      "verse_number": 14
    },
    {
      "id": "32974cb4-2b70-4e11-bf35-71da8b5deefd",
      "m1": "خبر شد که سام نریمان بمرد",
      "m2": "همی دخمه سازد ورا زال گرد",
      "verse_number": 15
    },
    {
      "id": "14c9792c-3022-4776-9836-7d9073a57731",
      "m1": "ازان سخت شادان شد افراسیاب",
      "m2": "بدید آنکه بخت اندر آمد به خواب",
      "verse_number": 16
    },
    {
      "id": "69e8433e-f683-42ca-af63-eee4e2cc8d59",
      "m1": "بیامد چو پیش دهستان رسید",
      "m2": "برابر سراپردهای برکشید",
      "verse_number": 17
    },
    {
      "id": "2e9b93af-5dec-4ee4-98ef-c0be2cbc2a61",
      "m1": "سپه را که دانست کردن شمار",
      "m2": "برو چارصد بار بشمر هزار",
      "verse_number": 18
    },
    {
      "id": "6667a336-812d-41b1-a2ea-17d61fa2c7da",
      "m1": "بجوشید گفتی همه ریگ و شخ",
      "m2": "بیابان سراسر چو مور و ملخ",
      "verse_number": 19
    },
    {
      "id": "95f1cbac-4ea4-4b2c-b4a9-71db17597c8e",
      "m1": "ابا شاه نوذر صد و چل هزار",
      "m2": "همانا که بودند جنگی سوار",
      "verse_number": 20
    },
    {
      "id": "a81f83b4-5570-4b83-853b-9a8a026c0cc6",
      "m1": "به لشکر نگه کرد افراسیاب",
      "m2": "هیونی برافگند هنگام خواب",
      "verse_number": 21
    },
    {
      "id": "8f7c4108-bfd1-43e5-bcbf-45b706bf2bea",
      "m1": "یکی نامه بنوشت سوی پشنگ",
      "m2": "که جستیم نیکی و آمد به چنگ",
      "verse_number": 22
    },
    {
      "id": "95d8ff00-407f-44e9-8202-5f785eea17cf",
      "m1": "همه لشکر نوذر ار بشکریم",
      "m2": "شکارند و در زیر پی بسپریم",
      "verse_number": 23
    },
    {
      "id": "0bebc817-97be-4d56-828f-14fec5b27b93",
      "m1": "دگر سام رفت از در شهریار",
      "m2": "همانا نیاید بدین کارزار",
      "verse_number": 24
    },
    {
      "id": "3114f201-19a2-4cdc-8be0-1e4e39f40997",
      "m1": "ستودان همی سازدش زال زر",
      "m2": "ندارد همی جنگ را پای و پر",
      "verse_number": 25
    },
    {
      "id": "a9b007c8-452f-4b32-bfbc-43e60eef3635",
      "m1": "مرا بیم ازو بُد به ایران زمین",
      "m2": "چو او شد ز ایران بجوییم کین",
      "verse_number": 26
    },
    {
      "id": "9ac8bf75-1728-478b-99a7-5f47449253c1",
      "m1": "همانا شماساس در نیمروز",
      "m2": "نشستست با تاج گیتی فروز",
      "verse_number": 27
    },
    {
      "id": "98ec4289-7435-4b5b-9de3-9ba90a6d9ccb",
      "m1": "به هنگام هر کار جستن نکوست",
      "m2": "زدن رای با مرد هشیار و دوست",
      "verse_number": 28
    },
    {
      "id": "f21a68d5-c2d0-4831-8cac-4ba5c31d8186",
      "m1": "چو کاهل شود مرد هنگام کار",
      "m2": "ازان پس نیابد چنان روزگار",
      "verse_number": 29
    },
    {
      "id": "19c73c2f-a2b1-4b0c-9b7d-269e8bade468",
      "m1": "هیون تکاور برآورد پر",
      "m2": "بشد نزد سالار خورشید فر",
      "verse_number": 30
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 30
  }
}