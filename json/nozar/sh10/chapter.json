{
  "id": "a7177b39-45b0-47d2-8d19-3bcd92ce04fe",
  "title": "بخش ۱۰",
  "verses": [
    {
      "id": "2312ae4a-fe38-4346-9d08-4abc9c489cbf",
      "m1": "فرستاده نزدیک دستان رسید",
      "m2": "به کردار آتش دلش بردمید",
      "verse_number": 1
    },
    {
      "id": "7c58445d-5c87-49d4-9f7c-cd9ceff689dc",
      "m1": "سوی گرد مهراب بنهاد روی",
      "m2": "همی تاخت با لشکری جنگجوی",
      "verse_number": 2
    },
    {
      "id": "47720484-32f8-4b34-aff4-3f1c7dcce453",
      "m1": "چو مهراب را پای بر جای دید",
      "m2": "به سرش اندرون دانش و رای دید",
      "verse_number": 3
    },
    {
      "id": "d4352904-9092-4da1-ab2c-b3a486f93809",
      "m1": "به دل گفت کاکنون ز لشکر چه باک",
      "m2": "چه پیشم خزروان چه یک مشت خاک",
      "verse_number": 4
    },
    {
      "id": "e54ddbca-6297-4b3f-b07f-c949c663e08f",
      "m1": "پس آنگه سوی شهر بنهاد روی",
      "m2": "چو آمد به شهر اندرون نامجوی",
      "verse_number": 5
    },
    {
      "id": "09254e4b-5ec5-4616-892a-7344b53c8a8f",
      "m1": "به مهراب گفت ای هشیوار مرد",
      "m2": "پسندیده اندر همه کارکرد",
      "verse_number": 6
    },
    {
      "id": "fe0c4de1-0f13-4a4c-9df7-78d647147255",
      "m1": "کنون من شوم در شب تیرهگون",
      "m2": "یکی دست یازم بریشان به خون",
      "verse_number": 7
    },
    {
      "id": "22f9c7cd-6658-470a-bdaf-e921973913d5",
      "m1": "شوند آگه از من که بازآمدم",
      "m2": "دل آگنده و کینه ساز آمدم",
      "verse_number": 8
    },
    {
      "id": "8b112da0-c4bf-418c-82d9-b3ae14ae3f77",
      "m1": "کمانی به بازو در افگند سخت",
      "m2": "یکی تیر برسان شاخ درخت",
      "verse_number": 9
    },
    {
      "id": "51dd23f6-a570-4a54-9887-9b67a5509377",
      "m1": "نگه کرد تا جای گردان کجاست",
      "m2": "خدنگی به چرخ اندرون راند راست",
      "verse_number": 10
    },
    {
      "id": "fefb6c1f-9f26-4dac-ba15-c409d3e552cf",
      "m1": "بینداخت سه جای سه چوبه تیر",
      "m2": "برآمد خروشیدن دار و گیر",
      "verse_number": 11
    },
    {
      "id": "743cd445-5ef5-45f6-9dba-1d35e5cc1f2d",
      "m1": "چو شب روز شد انجمن شد سپاه",
      "m2": "بران تیر کردند هر کس نگاه",
      "verse_number": 12
    },
    {
      "id": "ea44779d-df14-43ba-b156-b0496d1703fd",
      "m1": "بگفتند کاین تیر زالست و بس",
      "m2": "نراند چنین در کمان تیر کس",
      "verse_number": 13
    },
    {
      "id": "348d4dbe-c01e-406f-8b01-4f5e50d392d6",
      "m1": "چو خورشید تابان ز بالا بگشت",
      "m2": "خروش تبیره برآمد ز دشت",
      "verse_number": 14
    },
    {
      "id": "b5eb9394-8c86-42b9-9bd2-aa0356fdd7d4",
      "m1": "به شهر اندرون کوس با کرنای",
      "m2": "خروشیدن زنگ و هندی درای",
      "verse_number": 15
    },
    {
      "id": "554769fa-1645-4174-8668-e1cf39f75f1d",
      "m1": "برآمد سپه را به هامون کشید",
      "m2": "سراپرده و پیل بیرون کشید",
      "verse_number": 16
    },
    {
      "id": "1f0f4377-b81f-4399-9fdf-b7e553db908e",
      "m1": "سپاه اندرآورد پیش سپاه",
      "m2": "چو هامون شد از گرد کوه سیاه",
      "verse_number": 17
    },
    {
      "id": "b6ba3412-3ec7-430f-97f2-11d115336498",
      "m1": "خزروان دمان با عمود و سپر",
      "m2": "یکی تاختن کرد بر زال زر",
      "verse_number": 18
    },
    {
      "id": "060cd110-e3b2-41a1-ba2d-c19dffed6260",
      "m1": "عمودی بزد بر بر روشنش",
      "m2": "گسسته شد آن نامور جوشنش",
      "verse_number": 19
    },
    {
      "id": "a706544e-6b9d-4809-aeba-07ed675605a8",
      "m1": "چو شد تافته شاه زابلستان",
      "m2": "برفتند گردان کابلستان",
      "verse_number": 20
    },
    {
      "id": "a0bdb6a0-fb0a-4d5d-b924-c6a784543887",
      "m1": "یکی درع پوشید زال دلیر",
      "m2": "به جنگ اندر آمد به کردار شیر",
      "verse_number": 21
    },
    {
      "id": "bf8fbc41-25d3-4277-abc5-726288ad07b7",
      "m1": "به دست اندرون داشت گُرز پدر",
      "m2": "سرش گشته پر خشم و پر خون جگر",
      "verse_number": 22
    },
    {
      "id": "6368e9bc-8ad5-4d30-a631-a855cd827f13",
      "m1": "بزد بر سرش گُرزهٔ گاورنگ",
      "m2": "زمین شد ز خونش چو پشت پلنگ",
      "verse_number": 23
    },
    {
      "id": "5c743757-7844-4468-b38d-115ca5b94268",
      "m1": "بیفگند و بسپرد و زو درگذشت",
      "m2": "ز پیش سپاه اندر آمد به دشت",
      "verse_number": 24
    },
    {
      "id": "6f92a77a-6465-425f-9b5a-bebb2645aaa8",
      "m1": "شماساس را خواست کاید برون",
      "m2": "نیامد برون کش بخوشید خون",
      "verse_number": 25
    },
    {
      "id": "140beb0d-3cd1-47cd-9e14-d73d06c7374b",
      "m1": "به گرد اندرون یافت کلباد را",
      "m2": "به گردن برآورد پولاد را",
      "verse_number": 26
    },
    {
      "id": "d09ddf34-db26-41cd-a33d-28a6143446d7",
      "m1": "چو شمشیرزن گُرز دستان بدید",
      "m2": "همی کرد ازو خویشتن ناپدید",
      "verse_number": 27
    },
    {
      "id": "84a481ea-b560-4322-a849-ef751014d1e6",
      "m1": "کمان را به زه کرد زال سوار",
      "m2": "خدنگی بدو اندرون راند خوار",
      "verse_number": 28
    },
    {
      "id": "952a89a8-5d56-4003-9cc3-b93cb172bf19",
      "m1": "بزد بر کمربند کلباد بر",
      "m2": "بران بند زنجیر پولاد بر",
      "verse_number": 29
    },
    {
      "id": "6ebe2eaa-2e10-40a9-b64e-ebf19772224f",
      "m1": "میانش ابا کوههٔ زین بدوخت",
      "m2": "سپه را به کلباد بر دل بسوخت",
      "verse_number": 30
    },
    {
      "id": "62e41c02-5e9a-474a-8132-4aed7f314e48",
      "m1": "چو این دو سرافگنده شد در نبرد",
      "m2": "شماساس شد بیدل و روی زرد",
      "verse_number": 31
    },
    {
      "id": "7d4270ce-0c34-4b2f-8151-88640e79c53a",
      "m1": "شماساس و آن لشکر رزم ساز",
      "m2": "پراگنده از رزم گشتند باز",
      "verse_number": 32
    },
    {
      "id": "9afd86b9-12a3-4656-91d0-54f65e6377f8",
      "m1": "پس اندر دلیران زاولستان",
      "m2": "برفتند با شاه کابلستان",
      "verse_number": 33
    },
    {
      "id": "18a39c80-ffaa-4c59-836c-e956cd3231ab",
      "m1": "چنان شد ز بس کشته در رزمگاه",
      "m2": "که گفتی جهان تنگ شد بر سپاه",
      "verse_number": 34
    },
    {
      "id": "7858f1be-420d-4ccd-8205-5dce0f9b5618",
      "m1": "سوی شاه ترکان نهادند سر",
      "m2": "گشاده سلیح و گسسته کمر",
      "verse_number": 35
    },
    {
      "id": "095054a5-9ca8-4d90-a074-1065bb60b26d",
      "m1": "شماساس چون در بیابان رسید",
      "m2": "ز ره قارن کاوه آمد پدید",
      "verse_number": 36
    },
    {
      "id": "e2ec02d6-e3f1-41ef-a375-de87cebfbb3b",
      "m1": "که از لشکر ویسه برگشته بود",
      "m2": "به خواری گرامیش را کشته بود",
      "verse_number": 37
    },
    {
      "id": "a200c2bd-ad6b-4c28-a494-6898b1ca27a2",
      "m1": "به هم بازخوردند هر دو سپاه",
      "m2": "شماساس با قارن کینهخواه",
      "verse_number": 38
    },
    {
      "id": "e540683c-97c0-498a-a334-c97d7224653e",
      "m1": "بدانست قارن که ایشان کیند",
      "m2": "ز زاولستان ساخته بر چیند",
      "verse_number": 39
    },
    {
      "id": "2133b7aa-73c1-487f-895e-453462844174",
      "m1": "بزد نای رویین و بگرفت راه",
      "m2": "به پیش سپاه اندر آمد سپاه",
      "verse_number": 40
    },
    {
      "id": "9bf7d285-9022-4766-b4df-998d0fbd8810",
      "m1": "ازان لشکر خسته و بسته مرد",
      "m2": "به خورشید تابان برآورد گرد",
      "verse_number": 41
    },
    {
      "id": "63590bd7-7842-4d56-b6df-4611f9734d08",
      "m1": "گریزان شماساس با چند مرد",
      "m2": "برفتند ازان تیره گرد نبرد",
      "verse_number": 42
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 42
  }
}