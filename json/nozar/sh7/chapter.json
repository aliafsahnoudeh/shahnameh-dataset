{
  "id": "14997e80-2534-4924-a582-8583dcc728dd",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "1dedd816-8a89-4468-ac12-c78b4e265cb7",
      "m1": "چو بشنید نوذر که قارن برفت",
      "m2": "دمان از پسش روی بنهاد و تفت",
      "verse_number": 1
    },
    {
      "id": "4b115d9f-624a-41cb-b3d0-674720672f09",
      "m1": "همی تاخت کز روز بد بگذرد",
      "m2": "سپهرش مگر زیر پی نسپرد",
      "verse_number": 2
    },
    {
      "id": "7537fff6-3419-4a0f-b14f-c506e0536689",
      "m1": "چو افراسیاب آگهی یافت زوی",
      "m2": "که سوی بیابان نهادست روی",
      "verse_number": 3
    },
    {
      "id": "ef2a6e7e-6e5b-493b-b78c-1df3a6f2e8dd",
      "m1": "سپاه انجمن کرد و پویان برفت",
      "m2": "چو شیر از پسش روی بنهاد و تفت",
      "verse_number": 4
    },
    {
      "id": "a59621f0-8703-4dc6-a7ad-8fa0e4316db1",
      "m1": "چو تنگ اندر آمد بر شهریار",
      "m2": "همش تاختن دید و هم کارزار",
      "verse_number": 5
    },
    {
      "id": "44c00415-f2b2-4c19-8457-b24687fb2e84",
      "m1": "بدان سان که آمد همی جست راه",
      "m2": "که تا بر سر آرد سری بیکلاه",
      "verse_number": 6
    },
    {
      "id": "7403f26a-ebb7-45a6-9464-2e474951d49f",
      "m1": "شب تیره تا شد بلند آفتاب",
      "m2": "همی گشت با نوذر افراسیاب",
      "verse_number": 7
    },
    {
      "id": "77825ac6-1e53-4ee2-bd55-d901ac04ca57",
      "m1": "ز گرد سواران جهان تار شد",
      "m2": "سرانجام نوذر گرفتار شد",
      "verse_number": 8
    },
    {
      "id": "f9324bd5-91cf-421a-a0b1-cc75fc85f5d9",
      "m1": "خود و نامداران هزار و دویست",
      "m2": "تو گفتی کشان بر زمین جای نیست",
      "verse_number": 9
    },
    {
      "id": "d7960a32-29fd-499d-9672-e8f84970a395",
      "m1": "بسی راه جستند و بگریختند",
      "m2": "به دام بلا هم برآویختند",
      "verse_number": 10
    },
    {
      "id": "d9fd02ac-bfaa-414c-a15e-cc59de126539",
      "m1": "چنان لشکری را گرفته به بند",
      "m2": "بیاورد با شهریار بلند",
      "verse_number": 11
    },
    {
      "id": "e9afbf1a-8724-4a99-a6d1-1e75dbe99e34",
      "m1": "اگر با تو گردون نشیند به راز",
      "m2": "هم از گردش او نیابی جواز",
      "verse_number": 12
    },
    {
      "id": "b0bac155-443f-4481-929a-65e90b1898b0",
      "m1": "همو تاج و تخت بلندی دهد",
      "m2": "همو تیرگی و نژندی دهد",
      "verse_number": 13
    },
    {
      "id": "24bc08eb-11b6-4e81-8511-55760450ae4e",
      "m1": "به دشمن همی ماند و هم به دوست",
      "m2": "گهی مغز یابی ازو گاه پوست",
      "verse_number": 14
    },
    {
      "id": "05d8fc4c-5ac8-4fa2-ac31-327c665a44fe",
      "m1": "سرت گر بساید به ابر سیاه",
      "m2": "سرانجام خاک است ازو جایگاه",
      "verse_number": 15
    },
    {
      "id": "a76ec023-8d1f-41aa-b4fb-0b7efd190cdc",
      "m1": "وزان پس بفرمود افراسیاب",
      "m2": "که از غار و کوه و بیابان و آب",
      "verse_number": 16
    },
    {
      "id": "981de7c5-386d-45b1-b784-90f8938db2c8",
      "m1": "بجویید تا قارن رزم زن",
      "m2": "رهایی نیابد ازین انجمن",
      "verse_number": 17
    },
    {
      "id": "eed0cf7e-b29d-4804-8a32-f3730f50973c",
      "m1": "چو بشنید کاو پیش ازان رفته بود",
      "m2": "ز کار شبستان برآشفته بود",
      "verse_number": 18
    },
    {
      "id": "494776e7-fc25-4663-a752-8a17e9267558",
      "m1": "غمی گشت ازان کار افراسیاب",
      "m2": "ازو دور شد خورد و آرام و خواب",
      "verse_number": 19
    },
    {
      "id": "1d62639e-2f61-4ad9-8b32-4d4fac65aaa5",
      "m1": "که قارن رها یافت از وی به جان",
      "m2": "بران درد پیچید و شد بدگمان",
      "verse_number": 20
    },
    {
      "id": "07cb70db-574d-479f-a62b-082be7770755",
      "m1": "چنین گفت با ویسهٔ نامور",
      "m2": "که دل سخت گردان به مرگ پسر",
      "verse_number": 21
    },
    {
      "id": "3a4f0012-1411-41d6-90a3-09abd025e211",
      "m1": "که چون قارن کاوه جنگ آورد",
      "m2": "پلنگ از شتابش درنگ آورد",
      "verse_number": 22
    },
    {
      "id": "317e5a5e-ee4b-4430-bb98-b58842b2d4db",
      "m1": "ترا رفت باید ببسته کمر",
      "m2": "یکی لشکری ساخته پرهنر",
      "verse_number": 23
    }
  ],
  "poem_info": {
