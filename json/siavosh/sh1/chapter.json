{
  "id": "08e0fb2a-afa9-498e-8222-6fdc2a0f7324",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "4742e6ac-98ac-4750-87c5-4202b2add764",
      "m1": "کنون ای سخن گوی بیدار مغز",
      "m2": "یکی داستانی بیارای نغز",
      "verse_number": 1
    },
    {
      "id": "8fe0f986-830f-4f86-95e8-00355690a6a2",
      "m1": "سخن چون برابر شود با خرد",
      "m2": "روان سراینده رامش برد",
      "verse_number": 2
    },
    {
      "id": "5c2fda89-14b7-48ce-96eb-b663ffd52401",
      "m1": "کسی را که اندیشه ناخوش بود",
      "m2": "بدان ناخوشی رای او گش بود",
      "verse_number": 3
    },
    {
      "id": "db9c4efb-ab33-4235-aa2a-00348fb813b2",
      "m1": "همی خویشتن را چلیپا کند",
      "m2": "به پیش خردمند رسوا کند",
      "verse_number": 4
    },
    {
      "id": "c11eefff-7b1a-483d-8be5-ae8dcab34647",
      "m1": "ولیکن نبیند کس آهوی خویش",
      "m2": "ترا روشن آید همه خوی خویش",
      "verse_number": 5
    },
    {
      "id": "c3027ea7-25fc-47a8-bfc2-637cfd20d347",
      "m1": "اگر داد باید که ماند بجای",
      "m2": "بیارای ازین پس بدانا نمای",
      "verse_number": 6
    },
    {
      "id": "0f55c38c-dc2d-49bf-8435-a8e047e5cd03",
      "m1": "چو دانا پسندد پسندیده گشت",
      "m2": "به جوی تو در آب چون دیده گشت",
      "verse_number": 7
    },
    {
      "id": "d30cf978-a530-4f13-86c8-076092419183",
      "m1": "زگفتار دهقان کنون داستان",
      "m2": "تو برخوان و برگوی با راستان",
      "verse_number": 8
    },
    {
      "id": "a5d1a8d2-06f6-42f3-9822-cf664bd03618",
      "m1": "کهن گشته این داستانها ز من",
      "m2": "همی نو شود بر سر انجمن",
      "verse_number": 9
    },
    {
      "id": "7bfb5f4c-02b5-479f-baa2-5a81283bc6f2",
      "m1": "اگر زندگانی بود دیر یاز",
      "m2": "برین وین خرم بمانم دراز",
      "verse_number": 10
    },
    {
      "id": "89af64dd-eeec-45e2-b6ff-7fc33a9f6b16",
      "m1": "یکی میوهداری بماند ز من",
      "m2": "که نازد همی بار او بر چمن",
      "verse_number": 11
    },
    {
      "id": "7735957d-e2f0-49c6-9ea6-6ed97dd1003f",
      "m1": "ازان پس که بنمود پنچاه و هشت",
      "m2": "بسر بر فراوان شگفتی گذشت",
      "verse_number": 12
    },
    {
      "id": "55e12321-ace0-4f5c-b810-4d5cc5fc429f",
      "m1": "همی آز کمتر نگردد بسال",
      "m2": "همی روز جوید بتقویم و فال",
      "verse_number": 13
    },
    {
      "id": "561b71c2-03aa-4d1b-8dbc-e146e00b8623",
      "m1": "چه گفتست آن موبد پیش رو",
      "m2": "که هرگز نگردد کهن گشته نو",
      "verse_number": 14
    },
    {
      "id": "e5b8c2b0-66ab-426a-9fd5-1d371f4b616a",
      "m1": "تو چندان که گویی سخن گوی باش",
      "m2": "خردمند باش و جهانجوی باش",
      "verse_number": 15
    },
    {
      "id": "4c4a4e0e-bd13-440c-ab37-265a1e8920d3",
      "m1": "چو رفتی سر و کار با ایزدست",
      "m2": "اگر نیک باشدت جای ار بَدَست",
      "verse_number": 16
    },
    {
      "id": "2a6e651c-ba33-49b1-9c79-bc695fd300d3",
      "m1": "نگر تا چه کاری همان بدروی",
      "m2": "سخن هرچه گویی همان بشنوی",
      "verse_number": 17
    },
    {
      "id": "bfd77e95-cc85-4d64-9efe-74ffabf77da8",
      "m1": "درشتی ز کس نشنود نرم گوی",
      "m2": "به جز نیکویی در زمانه مجوی",
      "verse_number": 18
    },
    {
      "id": "ffea35a2-c15c-497a-b17a-444ca3fa752e",
      "m1": "به گفتار دهقان کنون بازگرد",
      "m2": "نگر تا چه گوید سراینده مرد",
      "verse_number": 19
    }
  ],
  "poem_info": {
