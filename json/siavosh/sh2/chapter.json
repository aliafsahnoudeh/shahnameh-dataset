{
  "id": "c3cafd92-1a46-4dda-af69-40cf2b3d38d2",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "d13214f3-db42-409b-860e-6570221894a1",
      "m1": "چنین گفت موبد که یک روز طوس",
      "m2": "بدانگه که برخاست بانگ خروس",
      "verse_number": 1
    },
    {
      "id": "d6d298f0-d86d-4cb2-8d1e-29a68d87345b",
      "m1": "خود و گیو گودرز و چندی سوار",
      "m2": "برفتند شاد از در شهریار",
      "verse_number": 2
    },
    {
      "id": "a52f72f4-29ea-4ccf-b861-b08c2fc1c5e9",
      "m1": "به نخچیر گوران به دشت دغوی",
      "m2": "ابا باز و یوزان نخچیر جوی",
      "verse_number": 3
    },
    {
      "id": "f55bfb86-cb80-4ba6-b307-416b793af44d",
      "m1": "فراوان گرفتند و انداختند",
      "m2": "علوفه چهل روزه را ساختند",
      "verse_number": 4
    },
    {
      "id": "c572139f-8b4c-421c-bc04-954ac972e6b1",
      "m1": "بدان جایگه ترک نزدیک بود",
      "m2": "زمینش ز خرگاه تاریک بود",
      "verse_number": 5
    },
    {
      "id": "f0fb4e15-eff0-422e-8f00-afe58c0b4966",
      "m1": "یکی بیشه پیش اندر آمد ز دور",
      "m2": "به نزدیک مرز سواران تور",
      "verse_number": 6
    },
    {
      "id": "20749487-5a23-458b-897f-04e17004c564",
      "m1": "همی راند در پیش با طوس گیو",
      "m2": "پس اندر پرستندهای چند نیو",
      "verse_number": 7
    },
    {
      "id": "890df330-182d-4f6b-866c-ca82e477443d",
      "m1": "بران بیشه رفتند هر دو سوار",
      "m2": "بگشتند بر گرد آن مرغزار",
      "verse_number": 8
    },
    {
      "id": "279624e3-da5d-4a42-8030-da3debee595f",
      "m1": "به بیشه یکی خوب رخ یافتند",
      "m2": "پر از خنده لب هر دو بشتافتند",
      "verse_number": 9
    },
    {
      "id": "2ed2ffc7-99b3-4469-b2c7-e700a154f176",
      "m1": "به دیدار او در زمانه نبود",
      "m2": "برو بر ز خوبی بهانه نبود",
      "verse_number": 10
    },
    {
      "id": "bcef0830-fa07-4d85-bb55-ace56ee8a30f",
      "m1": "بدو گفت گیو ای فریبنده ماه",
      "m2": "ترا سوی این بیشه چون بود راه",
      "verse_number": 11
    },
    {
      "id": "030d4232-8014-4007-a664-08beafb9d45f",
      "m1": "چنین داد پاسخ که ما را پدر",
      "m2": "بزد دوش بگذاشتم بوم و بر",
      "verse_number": 12
    },
    {
      "id": "d685cc0a-36c9-4cae-bc11-08cf079908ec",
      "m1": "شب تیره مست آمد از دشت سور",
      "m2": "همان چون مرا دید جوشان ز دور",
      "verse_number": 13
    },
    {
      "id": "a5fa91f9-c76a-49e6-9d30-07263d39f696",
      "m1": "یکی خنجری آبگون برکشید",
      "m2": "همان خواست از تن سرم را برید",
      "verse_number": 14
    },
    {
      "id": "cedd4cd4-c4b3-4431-abe7-7598575aa4a7",
      "m1": "بپرسید زو پهلوان از نژاد",
      "m2": "برو سروبن یک به یک کرد یاد",
      "verse_number": 15
    },
    {
      "id": "b1855f04-257e-4c4f-a726-dcc6fb4d9187",
      "m1": "بدو گفت من خویش گرسیوزم",
      "m2": "به شاه آفریدون کشد پروزم",
      "verse_number": 16
    },
    {
      "id": "de2e7518-b1d5-470d-8a7a-a20545866482",
      "m1": "پیاده بدو گفت چون آمدی",
      "m2": "که بیباره و رهنمون آمدی",
      "verse_number": 17
    },
    {
      "id": "a080bd87-96ff-4944-8493-ee97363481c2",
      "m1": "چنین داد پاسخ که اسپم بماند",
      "m2": "ز سستی مرا بر زمین برنشاند",
      "verse_number": 18
    },
    {
      "id": "87dabde1-c61c-406d-b1bf-29bd06b3c4de",
      "m1": "بیاندازه زر و گهر داشتم",
      "m2": "به سر بر یکی تاج زر داشتم",
      "verse_number": 19
    },
    {
      "id": "a1018fb2-1b4b-4c31-a455-d094793ab57b",
      "m1": "بران روی بالا ز من بستدند",
      "m2": "نیام یکی تیغ بر من زدند",
      "verse_number": 20
    },
    {
      "id": "a477a0c0-3bef-4c37-89e8-73e68c288cc2",
      "m1": "چو هشیار گردد پدر بیگمان",
      "m2": "سواری فرستد پس من دمان",
      "verse_number": 21
    },
    {
      "id": "50783d9f-9602-4356-a105-9802ccfe19a7",
      "m1": "بیاید همی تازیان مادرم",
      "m2": "نخواهد کزین بوم و بر بگذرم",
      "verse_number": 22
    },
    {
      "id": "e66a822c-5a90-4fb4-ac0e-5b1c3fb08d25",
      "m1": "دل پهلوانان بدو نرم گشت",
      "m2": "سر طوس نوذر بیآزرم گشت",
      "verse_number": 23
    },
    {
      "id": "56bb0aec-9050-4a9b-bd2d-690ca7025bdb",
      "m1": "شه نوذری گفت من یافتم",
      "m2": "از ایرا چنین تیز بشتافتم",
      "verse_number": 24
    },
    {
      "id": "7b32bd38-ffc8-4f3d-a2db-8c14d7a0ddd5",
      "m1": "بدو گفت گیو ای سپهدار شاه",
      "m2": "نه با من برابر بدی بیسپاه",
      "verse_number": 25
    },
    {
      "id": "76e433d0-4a8e-4efe-91cc-917f885ab704",
      "m1": "همان طوس نوذر بدان بستهید",
      "m2": "کجا پیش اسپ من اینجا رسید",
      "verse_number": 26
    },
    {
      "id": "43cc2bb2-ea25-4fac-ae7c-c58d530c1b97",
      "m1": "بدو گیو گفت این سخن خودمگوی",
      "m2": "که من تاختم پیش نخچیرجوی",
      "verse_number": 27
    },
    {
      "id": "3e5e125b-d574-484f-a774-90072cffa6a8",
      "m1": "ز بهر پرستندهای گرمگوی",
      "m2": "نگردد جوانمرد پرخاشجوی",
      "verse_number": 28
    },
    {
      "id": "af55f62a-e45e-4800-8766-c57aa341fdfa",
      "m1": "سخنشان به تندی بجایی رسید",
      "m2": "که این ماه را سر بباید برید",
      "verse_number": 29
    },
    {
      "id": "b657efc0-79ef-4d02-861d-0ee93ad3cc84",
      "m1": "میانشان چو آن داوری شد دراز",
      "m2": "میانجی برآمد یکی سرفراز",
      "verse_number": 30
    },
    {
      "id": "0e150f64-908c-4bd3-a01a-f06e3de1def4",
      "m1": "که این را بر شاه ایران برید",
      "m2": "بدان کاو دهد هر دو فرمان برید",
      "verse_number": 31
    },
    {
      "id": "d7ae8f19-14b7-40da-8bb5-71ceb7da3bfc",
      "m1": "نگشتند هر دو ز گفتار اوی",
      "m2": "بر شاه ایران نهادند روی",
      "verse_number": 32
    },
    {
      "id": "98a8a3e1-c08f-4667-892f-805502e2a8f5",
      "m1": "چو کاووس روی کنیزک بدید",
      "m2": "بخندید و لب را به دندان گزید",
      "verse_number": 33
    },
    {
      "id": "6cdf6b73-25ef-4749-8550-1dc67d001fe9",
      "m1": "بهر دو سپهبد چنین گفت شاه",
      "m2": "که کوتاه شد بر شما رنج راه",
      "verse_number": 34
    },
    {
      "id": "8022ff26-074e-46ae-b279-a9cf7c1f0b8c",
      "m1": "برین داستان بگذرانیم روز",
      "m2": "که خورشید گیرند گردان بیوز",
      "verse_number": 35
    },
    {
      "id": "14f3b76a-859b-4d63-bea1-7eb3b96c2131",
      "m1": "گوزنست اگر آهوی دلبرست",
      "m2": "شکاری چنین از در مهترست",
      "verse_number": 36
    },
    {
      "id": "727de1db-feb1-41c0-ac94-88fcb2cd41d4",
      "m1": "بدو گفت خسرو نژاد تو چیست",
      "m2": "که چهرت همانند چهر پریست",
      "verse_number": 37
    },
    {
      "id": "329477f1-f342-4d8f-9561-f16787f8c58d",
      "m1": "ورا گفت از مام خاتونیم",
      "m2": "ز سوی پدر بر فریدونیم",
      "verse_number": 38
    },
    {
      "id": "24732452-37fe-49fc-be4b-323e27538c9b",
      "m1": "نیایم سپهدار گرسیوزست",
      "m2": "بران مرز خرگاه او مرکزست",
      "verse_number": 39
    },
    {
      "id": "69505eee-27c7-4505-9ded-c986e58bac6c",
      "m1": "بدو گفت کاین روی و موی و نژاد",
      "m2": "همی خواستی داد هر سه به باد",
      "verse_number": 40
    },
    {
      "id": "ed468586-5153-4bfd-a493-2892e5dc7cbd",
      "m1": "به مشکوی زرین کنم شایدت",
      "m2": "سر ماه رویان کنم بایدت",
      "verse_number": 41
    },
    {
      "id": "9ad8080d-89fe-44f6-bd70-86a4fa1f48eb",
      "m1": "چنین داد پاسخ که دیدم ترا",
      "m2": "ز گردنکشان برگزیدم ترا",
      "verse_number": 42
    },
    {
      "id": "64e02757-f872-48ce-9289-cace68191ef9",
      "m1": "بت اندر شبستان فرستاد شاه",
      "m2": "بفرمود تا برنشیند به گاه",
      "verse_number": 43
    },
    {
      "id": "09207678-4899-4fe4-8748-69a2aa9b902f",
      "m1": "بیآراستندش به دیبای زرد",
      "m2": "به یاقوت و پیروزه و لاجورد",
      "verse_number": 44
    },
    {
      "id": "847b5eeb-d3cc-453a-b2bc-60e67a76adf4",
      "m1": "دگر ایزدی هر چه بایست بود",
      "m2": "یکی سرخ یاقوت بد نابسود",
      "verse_number": 45
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 45
  }
}