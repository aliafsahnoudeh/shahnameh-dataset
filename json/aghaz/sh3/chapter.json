{
  "id": "39112ca2-206b-413c-ad3e-51c2a19c7ca5",
  "title": "بخش ۳ - گفتار اندر آفرینش عالم",
  "verses": [
    {
      "id": "11b7f423-945a-4931-a0c1-ba9b7e3d34fd",
      "m1": "از آغاز باید که دانی دُرُست",
      "m2": "سَرِ مایهٔ گوهَران از نُخُست",
      "verse_number": 1
    },
    {
      "id": "ff465342-1db6-4abf-8ebb-e0a451a197b2",
      "m1": "که یَزدان زِ ناچیز چیز آفرید",
      "m2": "بِدان تا توانایی آرَد پَدید",
      "verse_number": 2
    },
    {
      "id": "6eb6f588-8489-4cbe-97f3-850b908d2057",
      "m1": "سَرِ مایهٔ گوهران این چهار",
      "m2": "بَرآوَرده بیرَنج و بیروزگار",
      "verse_number": 3
    },
    {
      "id": "658798dc-85ef-4113-8860-5d54903ed6eb",
      "m1": "یکی آتشی بَر شُده تابناک",
      "m2": "میان آب و باد از بَرِ تیره خاک",
      "verse_number": 4
    },
    {
      "id": "7649fdd6-5fed-40ed-9b6a-72df0f670f00",
      "m1": "نخُستین که آتش به جُنبش دَمید",
      "m2": "زِ گرمیش پَس خُشکی آمد پَدید",
      "verse_number": 5
    },
    {
      "id": "52cfbb02-a1b3-48a2-a1f4-1cb7ce167479",
      "m1": "و زان پَس زِ آرام سَردی نُمود",
      "m2": "زِ سَردی هَمان باز تَری فُزود",
      "verse_number": 6
    },
    {
      "id": "3722581f-0199-424d-ab8e-83e21206e330",
      "m1": "چو این چار گوهَر به جای آمدند",
      "m2": "زِ بَهرِ سِپَنجی سَرای آمدند",
      "verse_number": 7
    },
    {
      "id": "874eaf60-7153-4ad7-8948-aad6eb0a3c9b",
      "m1": "گُهرها یِک اَندر دِگَر ساخته",
      "m2": "زِ هَر گونه گَردن بَراَفراخته",
      "verse_number": 8
    },
    {
      "id": "5141abe3-62ab-431f-936a-233c783e3770",
      "m1": "پَدید آمد این گُنبدِ تیز رو",
      "m2": "شگفتی نمایندهٔ نو به نو",
      "verse_number": 9
    },
    {
      "id": "4e8835ff-9b3c-47d6-bba4-0ac11482f7c2",
      "m1": "اَبَر دَه و دو هَفت شُد کَدخُدای",
      "m2": "گرفتند هَر یِک سزاوار جای",
      "verse_number": 10
    },
    {
      "id": "4922967b-54d5-4748-b4e1-61088ce86994",
      "m1": "دَرِ بَخشش و دادن آمد پَدید",
      "m2": "ببخشید دانا چُنان چون سَزید",
      "verse_number": 11
    },
    {
      "id": "5e3597b0-4feb-4532-88e2-9f237a5dc13f",
      "m1": "فلکها یِک اَندر دِگَر بَسته شُد",
      "m2": "بِجُنبید چون کار پیوسته شُد",
      "verse_number": 12
    },
    {
      "id": "653d8359-24a1-4636-ac92-6f06b82d27cc",
      "m1": "چو دریا و چون کوه و چون دَشت و راغ",
      "m2": "زَمین شُد به کِردارِ روشَن چراغ",
      "verse_number": 13
    },
    {
      "id": "6c80efde-291b-4da0-b493-47204e5e7c36",
      "m1": "بِبالید کوه آبها بَر دَمید",
      "m2": "سَرِ رُستَنی سوی بالا کشید",
      "verse_number": 14
    },
    {
      "id": "2a66c002-894b-4a46-9b58-c5fc41ca838f",
      "m1": "زمین را بُلندی نَبُد جایگاه",
      "m2": "یکی مَرکزی تیره بود و سیاه",
      "verse_number": 15
    },
    {
      "id": "881cf5fd-3f40-4700-b806-7522b2e1ce2b",
      "m1": "ستاره بَر او بَرشِگِفتی نُمود",
      "m2": "به خاک اَندرون روشنایی فُزود",
      "verse_number": 16
    },
    {
      "id": "bf7aca01-f11d-400a-9038-928166d1d577",
      "m1": "هَمی بَر شُد آتش فُرود آمد آب",
      "m2": "هَمی گَشت گِردِ زمین آفتاب",
      "verse_number": 17
    },
    {
      "id": "84d16be9-4b13-47cd-96b5-2b4e13a2cab7",
      "m1": "گیا رُست با چَند گونه درخت",
      "m2": "به زیر اَندر آمد سَرانشان زِ بَخت",
      "verse_number": 18
    },
    {
      "id": "732f64ea-b6ef-4a0e-8b94-8290713e06d9",
      "m1": "بِبالَد نَدارد جُز این نیرویی",
      "m2": "نپویَد چو پویَندگان هَر سویی",
      "verse_number": 19
    },
    {
      "id": "60e49ff5-3c7f-4c3b-803c-352913cbb5ac",
      "m1": "و زان پَس چو جُنبَنده آمد پَدید",
      "m2": "همه رُستَنی زیرِ خویش آورید",
      "verse_number": 20
    },
    {
      "id": "c12a9a13-f473-4d60-8024-2ac4461ebcbe",
      "m1": "خور و خواب و آرام جوید هَمی",
      "m2": "و زان زندگی کام جوید هَمی",
      "verse_number": 21
    },
    {
      "id": "d4795b1d-ea23-4ccd-9c0c-3d9d649e862b",
      "m1": "نه گویا زَبان وُ نه جویا خِرَد",
      "m2": "زِ خاک و زِ خاشاک تَن پَروَرَد",
      "verse_number": 22
    },
    {
      "id": "c4ddb672-4f2c-4831-9575-4d0e3e8542fb",
      "m1": "نَداند بَد و نیکِ فرجامِ کار",
      "m2": "نخواهد از او بَندگی کِردگار",
      "verse_number": 23
    },
    {
      "id": "6952ba05-ae18-4409-9002-ec52aff5a0cb",
      "m1": "چو دانا تَوانا بُد و دادگَر",
      "m2": "از ایرا نکرد ایچ پنهان هنر",
      "verse_number": 24
    },
    {
      "id": "20f1d95c-83f9-4b97-94cd-74c5214e53ec",
      "m1": "چُنین است فَرجامِ کارِ جَهان",
      "m2": "نَداند کسی آشکار و نهان",
      "verse_number": 25
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 25
  },
  "order_in_parent": 3
}