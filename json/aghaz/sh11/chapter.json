{
  "id": "3a542517-a851-41b1-af52-e0011244b703",
  "title": "بخش ۱۱ - در داستان ابو منصور",
  "verses": [
    {
      "id": "96501bc3-0864-4989-8936-76e451a9ccd0",
      "m1": "بدین نامه چون دست کردم دراز",
      "m2": "یکی مهتری بود گردنفراز",
      "verse_number": 1
    },
    {
      "id": "6a8a7ecc-b192-4196-bdeb-bc2d666113f2",
      "m1": "جوان بود و از گوهر پهلوان",
      "m2": "خردمند و بیدار و روشن روان",
      "verse_number": 2
    },
    {
      "id": "1af94097-5dec-4673-a3d6-048b55f67322",
      "m1": "خداوند رای و خداوند شرم",
      "m2": "سخن گفتن خوب و آوای نرم",
      "verse_number": 3
    },
    {
      "id": "bfc5feef-4336-4cab-8635-2ae4620639ce",
      "m1": "مرا گفت کز من چه باید همی",
      "m2": "که جانت سخن برگراید همی",
      "verse_number": 4
    },
    {
      "id": "4aeb90de-945f-4c6b-8321-ecb79ded6ed1",
      "m1": "به چیزی که باشد مرا دسترس",
      "m2": "بکوشم نیازت نیارم به کس",
      "verse_number": 5
    },
    {
      "id": "a69083a2-5a0d-45ad-8e4c-020a73b172e4",
      "m1": "همی داشتم چون یکی تازه سیب",
      "m2": "که از باد نامد به من بر نهیب",
      "verse_number": 6
    },
    {
      "id": "9b727ef2-013f-4956-a72c-c293f4397e31",
      "m1": "به کیوان رسیدم ز خاک نژند",
      "m2": "از آن نیکدل نامدار ارجمند",
      "verse_number": 7
    },
    {
      "id": "c2221585-0ec3-429a-9cf8-526b1a43783d",
      "m1": "به چشمش همان خاک و هم سیم و زر",
      "m2": "کریمی بدو یافته زیب و فر",
      "verse_number": 8
    },
    {
      "id": "1fbab026-711e-4f11-94ec-9310c10104d2",
      "m1": "سراسر جهان پیش او خوار بود",
      "m2": "جوانمرد بود و وفادار بود",
      "verse_number": 9
    },
    {
      "id": "16eedff7-af3a-44b2-a640-d8f73fee2d3c",
      "m1": "چنان نامور گم شد از انجمن",
      "m2": "چو در باغ سرو سهی از چمن",
      "verse_number": 10
    },
    {
      "id": "384cda6d-a37b-483a-88de-efa0b7c686c6",
      "m1": "نه ز او زنده بینم نه مرده نشان",
      "m2": "به دست نهنگان مردم کشان",
      "verse_number": 11
    },
    {
      "id": "cec382f3-fc2e-4d4e-a218-ad37e3f6530d",
      "m1": "دریغ آن کمربند و آن گِردگاه",
      "m2": "دریغ آن کِیی برز و بالای شاه",
      "verse_number": 12
    },
    {
      "id": "238aa690-ecd2-4e18-a649-e8a5e4148bc9",
      "m1": "گرفتار ز او دل شده ناامید",
      "m2": "نوان لرز لرزان به کردار بید",
      "verse_number": 13
    },
    {
      "id": "960a0e0f-c2c0-4a06-aee7-ef52a9343b21",
      "m1": "یکی پند آن شاه یاد آوریم",
      "m2": "ز کژی روان سوی داد آوریم",
      "verse_number": 14
    },
    {
      "id": "d69828e0-9227-4d3f-85c1-66178d79d98e",
      "m1": "مرا گفت کاین نامهٔ شهریار",
      "m2": "گرت گفته آید به شاهان سپار",
      "verse_number": 15
    },
    {
      "id": "5621f41e-ad49-43c0-bb8b-115a7b1ef3a9",
      "m1": "بدین نامه من دست بردم فراز",
      "m2": "به نام شهنشاه گردنفراز",
      "verse_number": 16
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 16
  }
}