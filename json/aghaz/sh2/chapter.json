{
  "id": "52d6bb98-99ed-4d17-a14e-edcd27f68fce",
  "title": "بخش ۲ - ستایش خرد",
  "verses": [
    {
      "id": "5d7f4d57-250f-42ad-8e49-eb5cfa126412",
      "m1": "کُنون اِی خِرَدمَند وَصفِ خِرَد",
      "m2": "بِدین جایگَه گفتن اَندر خُورَد",
      "verse_number": 1
    },
    {
      "id": "dbbe2656-57d0-4ec7-8ed7-f63824a82ad4",
      "m1": "کُنون تا چه داری بیار از خِرَد",
      "m2": "که گوشِ نیُوشَنده زو بَر خُورَد",
      "verse_number": 2
    },
    {
      "id": "aa12a7e6-7f33-4f28-aa68-70acd967c4ff",
      "m1": "خِرَد بِهتر از هَر چه ایزَد بِداد",
      "m2": "ستایش خِرَد را بِه از راهِ داد",
      "verse_number": 3
    },
    {
      "id": "fea93338-5726-4368-b160-27f38c567102",
      "m1": "خِرَد رَهنمای وُ خِرَد دِلگشای",
      "m2": "خِرَد دَست گیرد به هَر دو سَرای",
      "verse_number": 4
    },
    {
      "id": "391db2db-9cc9-4a4c-921a-632a44624267",
      "m1": "از او شادمانی وزویَت غَمی است",
      "m2": "وزویَت فُزونی وزویَت کَمی است",
      "verse_number": 5
    },
    {
      "id": "7563cf2e-fa75-4d34-8892-122613fd1121",
      "m1": "خِرَد تیره وُ مَرد روشن رَوان",
      "m2": "نَباشَد هَمی شادمان یِک زَمان",
      "verse_number": 6
    },
    {
      "id": "df71846f-fe7e-4257-9613-fffca40c41fd",
      "m1": "چه گُفت آن خِرَدمَند مَردِ خِرَد",
      "m2": "که دانا زِ گفتار او بَر خُورَد",
      "verse_number": 7
    },
    {
      "id": "8ff35f49-189f-4f7a-abad-908c126e4e21",
      "m1": "کسی کو خِرَد را نَدارَد زِ پیش",
      "m2": "دِلش گَردَد از کَردهٔ خویش ریش",
      "verse_number": 8
    },
    {
      "id": "eba79449-2817-4f6e-8249-77d4a891578c",
      "m1": "هُشیوار دیوانه خوانَد وُرا",
      "m2": "همان خویش بیگانه دانَد وُرا",
      "verse_number": 9
    },
    {
      "id": "6c0e7ba4-9cc5-4f77-95f3-a455fd903be8",
      "m1": "از اویی به هَر دو سَرای اَرجمَند",
      "m2": "گسسته خِرَد پای دارَد به بَند",
      "verse_number": 10
    },
    {
      "id": "c15efc03-8abf-438a-b059-2da4dd174d0e",
      "m1": "خِرَد چَشمِ جان اَست چون بِنگری",
      "m2": "تو بیچَشمِ شادان جَهان نَسپَری",
      "verse_number": 11
    },
    {
      "id": "9f7c2fef-43f7-417c-8864-1b99bb96b3e0",
      "m1": "نخُستآفرینش خِرَد را شِناس",
      "m2": "نگهبانِ جان است و آنِ سه پاس",
      "verse_number": 12
    },
    {
      "id": "215efabd-9945-4dfe-ab44-4986c91fdb22",
      "m1": "سه پاسِ تو چَشم اَست و گوش وُ زَبان",
      "m2": "کَز این سه رَسَد نیک و بَد بیگُمان",
      "verse_number": 13
    },
    {
      "id": "733395ee-3ebb-4078-997f-b10d725d37aa",
      "m1": "خِرَد را وُ جان را که یارَد سُتود",
      "m2": "وَ گَر مَن سِتایم که یارَد شُنود",
      "verse_number": 14
    },
    {
      "id": "b2fb5d42-64ab-4e67-95e1-90ef59399b76",
      "m1": "حَکیما چو کَس نیست گُفتن چه سود",
      "m2": "از این پَس بگو کآفرینش چه بود",
      "verse_number": 15
    },
    {
      "id": "d3359fb4-2b99-4471-8b7b-8160a4735e48",
      "m1": "تویی کردهٔ کِردگارِ جهان",
      "m2": "ببینی هَمی آشکار وُ نَهان",
      "verse_number": 16
    },
    {
      "id": "c83fb6cd-09a9-4d47-975c-a3eb5b4c73f5",
      "m1": "به گفتارِ دانندگان راه جُوی",
      "m2": "به گیتی بِپوی وُ به هَر کَس بِگوی",
      "verse_number": 17
    },
    {
      "id": "09fbdec0-5d5b-4017-ba5d-7bfa68777341",
      "m1": "زِ هَر دانشی چون سخن بِشنَوی",
      "m2": "از آموختن یِک زَمان نَغنَوی",
      "verse_number": 18
    },
    {
      "id": "b512383b-4269-4d09-b2fb-8b178eea6181",
      "m1": "چو دیدار یابی به شاخِ سَخُن",
      "m2": "بدانی که دانش نیاید به بُن",
      "verse_number": 19
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 19
  },
