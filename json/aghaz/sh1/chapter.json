{
  "id": "60ab4eaf-6874-4459-a77a-626fc9f52545",
  "title": "بخش ۱ - آغاز کتاب",
  "verses": [
    {
      "id": "8f8929e4-fbf9-4926-9aee-044c37974c5d",
      "m1": "به نام خداوند جان و خرد",
      "m2": "کز این برتر اندیشه بر نگذرد",
      "verse_number": 1
    },
    {
      "id": "126ac830-0da7-44c8-954a-d60883f40cb2",
      "m1": "خداوندِ نام و خداوندِ جای",
      "m2": "خداوندِ روزیدِهِ رهنمای",
      "verse_number": 2
    },
    {
      "id": "ed3b52bb-99b5-4a13-a6d3-c85276e0c4f9",
      "m1": "خداوند کیوان و گَردانسپهر",
      "m2": "فروزندهٔ ماه و ناهید و مهر",
      "verse_number": 3
    },
    {
      "id": "a4026bd4-bb5d-42c8-a73a-c4f8c3f48bd9",
      "m1": "ز نام و نشان و گمان برتر است",
      "m2": "نگارندهٔ برشده پیکر است",
      "verse_number": 4
    },
    {
      "id": "87e07f03-e7f5-474a-a0a0-33ae575e7581",
      "m1": "به بینندگان آفریننده را",
      "m2": "نبینی مرنجان دو بیننده را",
      "verse_number": 5
    },
    {
      "id": "899ae466-2d9c-4c5b-bce5-d5b1dd7a007a",
      "m1": "نیابد بدو نیز اندیشه راه",
      "m2": "که او برتر از نام و از جایگاه",
      "verse_number": 6
    },
    {
      "id": "4b34554e-9d7a-4d20-ad90-27b61ce6b7b0",
      "m1": "سخن هر چه زین گوهران بگذرد",
      "m2": "نیابد بدو راه جان و خرد",
      "verse_number": 7
    },
    {
      "id": "13b10234-6011-40a8-a961-25e8a9616e45",
      "m1": "خرد گر سخن برگزیند همی",
      "m2": "همان را گزیند که بیند همی",
      "verse_number": 8
    },
    {
      "id": "f2263ab6-a201-472f-89b9-458b5a93ecc3",
      "m1": "ستودن نداند کس او را چو هست",
      "m2": "میانْ بندگی را ببایدْت بست",
      "verse_number": 9
    },
    {
      "id": "1936f7c7-7b74-499f-908f-3f89812e4075",
      "m1": "خرد را و جان را همیسَنجد اوی",
      "m2": "در اندیشهٔ سَخته کِی گُنجد اوی",
      "verse_number": 10
    },
    {
      "id": "4437722c-3b14-43a7-a249-4631de532866",
      "m1": "بدین آلت رای و جان و زبان",
      "m2": "ستود آفریننده را کِی توان",
      "verse_number": 11
    },
    {
      "id": "34f02392-4943-41b7-b020-a6b40dca6123",
      "m1": "به هستیش باید که خستو شوی",
      "m2": "ز گفتار بیکار یکسو شوی",
      "verse_number": 12
    },
    {
      "id": "5766cba1-2062-4b18-acc6-1aa07ec353ef",
      "m1": "پرستنده باشیّ و جوینده راه",
      "m2": "به ژرفی به فرمانْش کردن نگاه",
      "verse_number": 13
    },
    {
      "id": "0c629b42-76f4-4171-874a-490747268fea",
      "m1": "توانا بود هر که دانا بود",
      "m2": "ز دانش دل پیر برنا بود",
      "verse_number": 14
    },
    {
      "id": "e4c98e93-2224-45cd-a475-b08a9c473cec",
      "m1": "از این پرده برتر سخنگاه نیست",
      "m2": "ز هستی مر اندیشه را راه نیست",
      "verse_number": 15
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 15
  }
}