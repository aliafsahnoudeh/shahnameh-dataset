{
  "id": "f685b10c-911f-4301-b6af-c03599097a83",
  "title": "بخش ۸ - گفتار اندر فراهم آوردن کتاب",
  "verses": [
    {
      "id": "afa82b9d-cb87-49d9-a81a-5f05ab9e7847",
      "m1": "سخن هر چه گویم همه گفتهاند",
      "m2": "بَرِ باغِ دانش همه رُفتهاند",
      "verse_number": 1
    },
    {
      "id": "d3e46ed6-8f28-411e-84a3-54b072684806",
      "m1": "اگر بر درختِ برومند جای",
      "m2": "نیابم که از بَر شدن نیست رای",
      "verse_number": 2
    },
    {
      "id": "96984c26-8402-4bb5-83b6-5b351a680391",
      "m1": "کسی کو شَوَد زیرِ نخلِ بلند",
      "m2": "همان سایه ز او بازدارَد گَزَند",
      "verse_number": 3
    },
    {
      "id": "4e53af90-eea8-4bd3-bfe4-aa23084c91df",
      "m1": "توانم مگر پایهای ساختن",
      "m2": "بَرِ شاخِ آن سروِ سایه فکن",
      "verse_number": 4
    },
    {
      "id": "dc756b9f-ba17-4576-aab8-b7668570fe11",
      "m1": "کز این ناموَر نامهٔ شهریار",
      "m2": "به گیتی بمانم یکی یادگار",
      "verse_number": 5
    },
    {
      "id": "5ea5afc3-db10-4057-8163-0446f24b6e38",
      "m1": "تو این را دروغ و فَسانه مَدان",
      "m2": "به رنگِ فُسون و بهانه مَدان",
      "verse_number": 6
    },
    {
      "id": "5b736ace-4334-4f27-b2ca-33b98286f390",
      "m1": "از او هر چه اندر خورَد با خِرَد",
      "m2": "دگر بَر رَهِ رمز و معنی بَرَد",
      "verse_number": 7
    },
    {
      "id": "8297e1ac-379e-4f17-a119-68af6c4de175",
      "m1": "یکی نامه بود از گَهِ باستان",
      "m2": "فراوان بِدو اندرون داستان",
      "verse_number": 8
    },
    {
      "id": "d8083e61-dce8-47d8-bec5-d9c2cc6c2af1",
      "m1": "پراگَنده دَر دستِ هَر موبَدی",
      "m2": "از او بَهرهای نزدِ هَر بِخرَدی",
      "verse_number": 9
    },
    {
      "id": "423ee340-d4ee-4bbd-b21a-076f44e1f1dc",
      "m1": "یکی پهلوان بود دهقاننژاد",
      "m2": "دلیر و بزرگ و خردمند و راد",
      "verse_number": 10
    },
    {
      "id": "4e05c9d1-4260-42b4-9230-e868e0309b1d",
      "m1": "پژوهندهٔ روزگارِ نَخُست",
      "m2": "گذشته سخنها همه باز جُست",
      "verse_number": 11
    },
    {
      "id": "38ac19ec-7825-4d5f-9e9e-7122fb402c07",
      "m1": "زِ هر کشوری موبَدی سالخَرد",
      "m2": "بیاورد کاین نامه را یاد کرد",
      "verse_number": 12
    },
    {
      "id": "33b751eb-34b8-4a23-b196-46b431a1be30",
      "m1": "بپرسیدشان از کیانِ جهان",
      "m2": "و زان نامدارانِ فرخ مَهان",
      "verse_number": 13
    },
    {
      "id": "8e45ffb4-771d-4ba0-b0ec-30421a9e727e",
      "m1": "که گیتی به آغاز چون داشتند",
      "m2": "که ایدون به ما خوار بگذاشتند",
      "verse_number": 14
    },
    {
      "id": "a16514d8-9396-4274-af90-24b63068ce9a",
      "m1": "چگونه سَر آمد به نیک اختری",
      "m2": "بر ایشان همه روزِ کُندآوری",
      "verse_number": 15
    },
    {
      "id": "9b5dd88b-8b59-4e15-a0eb-fa5866b0aa72",
      "m1": "بگفتند پیشَش یکایک مَهان",
      "m2": "سخنهای شاهان و گشتِ جهان",
      "verse_number": 16
    },
    {
      "id": "2db759db-3a8b-4d56-b76b-2449bfef671b",
      "m1": "چو بشنید از ایشان سِپَهبَد سَخُن",
      "m2": "یکی ناموَر نامه اَفکند بُن",
      "verse_number": 17
    },
    {
      "id": "34d539ac-470d-4c24-b8f5-59926a09bd2e",
      "m1": "چنین یادگاری شد اندر جهان",
      "m2": "بر او آفرین از کهان و مهان",
      "verse_number": 18
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 18
  },
