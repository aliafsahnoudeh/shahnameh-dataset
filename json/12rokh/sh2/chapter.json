{
  "id": "12ba05dd-70da-4458-9a83-fed1a61059b9",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "74c41130-ddbf-4c49-af37-2f063239fc0b",
      "m1": "دل شاه ترکان چنان کم شنود",
      "m2": "همیشه به رنج از پی آز بود",
      "verse_number": 1
    },
    {
      "id": "4225a2cc-2f60-41fa-ac41-2c818c617d84",
      "m1": "از آن پس که برگشت زان رزمگاه",
      "m2": "که رستم بر او کرد گیتی سیاه",
      "verse_number": 2
    },
    {
      "id": "ca8d34a8-8c95-40f0-86ea-340b41e99b21",
      "m1": "بشد تازیان تا به خلخ رسید",
      "m2": "به ننگ از کیان شد سرش ناپدید",
      "verse_number": 3
    },
    {
      "id": "5747b33a-4406-4ce9-8cdd-692d057284ad",
      "m1": "به کاخ اندر آمد پر آزار دل",
      "m2": "ابا کاردانان هشیاردل",
      "verse_number": 4
    },
    {
      "id": "ab2cdd04-97d9-46a8-87fd-628215f11fec",
      "m1": "چو پیران و گرسیوز رهنمون",
      "m2": "قراخان و چون شیده و گرسیون",
      "verse_number": 5
    },
    {
      "id": "56e05158-5851-4b09-a881-9c9462635f99",
      "m1": "بر ایشان همه داستان برگشاد",
      "m2": "گذشته سخنها همه کرد یاد",
      "verse_number": 6
    },
    {
      "id": "fdb7cba4-8eaa-48ba-b5c8-3dc98b962d82",
      "m1": "که تا برنهادم به شاهی کلاه",
      "m2": "مرا گشت خورشید و تابنده ماه",
      "verse_number": 7
    },
    {
      "id": "dac9d9e6-5320-4640-9cff-361e1f14a90c",
      "m1": "مرا بود بر مهتران دسترس",
      "m2": "عنان مرا برنتابید کس",
      "verse_number": 8
    },
    {
      "id": "d9e26baa-866c-474a-a911-d1816fcbbf99",
      "m1": "ز هنگام رزم منوچهر باز",
      "m2": "نبد دست ایران به توران دراز",
      "verse_number": 9
    },
    {
      "id": "ed3fe5e1-6da0-4fa9-be2a-7893c17210ac",
      "m1": "شبیخون کند تا در خان من",
      "m2": "از ایران بیازند بر جان من",
      "verse_number": 10
    },
    {
      "id": "c794aa71-e5c1-4c1f-9c57-49532211b11d",
      "m1": "دلاور شد آن مردم نادلیر",
      "m2": "گوزن اندر آمد به بالین شیر",
      "verse_number": 11
    },
    {
      "id": "d4f9813e-cf04-44e8-9597-66bf0f93a97b",
      "m1": "بر این کینه گر کار سازیم زود",
      "m2": "وگرنه برآرند زین مرز دود",
      "verse_number": 12
    },
    {
      "id": "055216db-ca60-4cef-8a7a-4ba8ceca214a",
      "m1": "سزد گر کنون گرد این کشورم",
      "m2": "سراسر فرستادگان گسترم",
      "verse_number": 13
    },
    {
      "id": "fa7f950a-7551-49a5-844f-7b5e22b81862",
      "m1": "ز ترکان واز چین هزاران هزار",
      "m2": "کمربستگان از در کارزار",
      "verse_number": 14
    },
    {
      "id": "cd74c2a7-d4a6-4d92-a2eb-180213494666",
      "m1": "بیاریم بر گرد ایران سپاه",
      "m2": "بسازیم هر سو یکی رزمگاه",
      "verse_number": 15
    },
    {
      "id": "5e704a19-dced-451e-a12c-924312a426e8",
      "m1": "همه موبدان رای هشیار خویش",
      "m2": "نهادند با گفت سالار خویش",
      "verse_number": 16
    },
    {
      "id": "ba60d6f5-b92d-4936-9d6c-659854dfab48",
      "m1": "که ما را ز جیحون بباید گذشت",
      "m2": "زدن کوس شاهی بر آن پهن دشت",
      "verse_number": 17
    },
    {
      "id": "5e81887d-b19e-4438-a426-912236ab3f00",
      "m1": "به آموی لشکرگهی ساختن",
      "m2": "شب و روز ناسودن از تاختن",
      "verse_number": 18
    },
    {
      "id": "b86c385a-0e81-435c-a72b-d0ca5de1e57b",
      "m1": "که آن جای جنگست و خون ریختن",
      "m2": "چه با گیو و با رستم آویختن",
      "verse_number": 19
    },
    {
      "id": "a226a49a-a4e8-49ee-8178-bc19ff96947a",
      "m1": "سرافراز گردان گیرنده شهر",
      "m2": "همه تیغ کین آب داده به زهر",
      "verse_number": 20
    },
    {
      "id": "67eb53ec-3c40-4a38-8c56-506c1f1147a7",
      "m1": "چو افراسیاب آن سخنها شنود",
      "m2": "برافروخت از بخت و شادی نمود",
      "verse_number": 21
    },
    {
      "id": "26ff758f-f07a-4bf0-aee1-902f2d52de3a",
      "m1": "ابر پهلوانان و بر موبدان",
      "m2": "بکرد آفرینی به رسم ردان",
      "verse_number": 22
    },
    {
      "id": "ecee7425-bae9-47fa-aecc-8b5a236d24a7",
      "m1": "نویسندهٔ نامه را پیش خواند",
      "m2": "سخنهای بایسته چندی براند",
      "verse_number": 23
    },
    {
      "id": "20456d61-85e8-42d6-983c-aa7cb5c02fa2",
      "m1": "فرستادگان خواست از انجمن",
      "m2": "به نزدیک فغفور و شاه ختن",
      "verse_number": 24
    },
    {
      "id": "4a8f07bb-8e5c-44f1-871e-688e04481e64",
      "m1": "فرستاد نامه به هر کشوری",
      "m2": "به هر نامداری و هر مهتری",
      "verse_number": 25
    },
    {
      "id": "3b3b06a0-a369-4ef8-a804-e875830035b2",
      "m1": "سپه خواست کاندیشهٔ جنگ داشت",
      "m2": "ز بیژن بدان گونه دل تنگ داشت",
      "verse_number": 26
    },
    {
      "id": "f0a2a5e7-9f06-4f46-8d6e-ec27dca4767b",
      "m1": "دو هفته برآمد ز چین و ختن",
      "m2": "ز هر کشوری شد سپاه انجمن",
      "verse_number": 27
    },
    {
      "id": "f326911b-6701-4651-a060-47cc7b304160",
      "m1": "چو دریای جوشان زمین بردمید",
      "m2": "چنان شد که کس روز روشن ندید",
      "verse_number": 28
    },
    {
      "id": "6a63f293-a55c-40b2-9098-656426619f78",
      "m1": "گله هرچ بودش ز اسبان یله",
      "m2": "به شهر اندر آورد یکسر گله",
      "verse_number": 29
    },
    {
      "id": "5911f162-7330-4404-8a56-0684825c1265",
      "m1": "همان گنجها کز گه تور باز",
      "m2": "پدر بر پسربر همی داشت راز",
      "verse_number": 30
    },
    {
      "id": "9d22d3c3-0254-499c-a105-d6a82787aff6",
      "m1": "سر بدرهها را گشادن گرفت",
      "m2": "شب و روز دینار دادن گرفت",
      "verse_number": 31
    },
    {
      "id": "02d4a8cc-19ef-4d0b-a957-c460ee2101d2",
      "m1": "چو لشکر سراسر شد آراسته",
      "m2": "بدان بینیازی شد از خواسته",
      "verse_number": 32
    },
    {
      "id": "234d2967-caab-4cb2-a70d-f142b6c2d6c3",
      "m1": "ز گردان گزین کرد پنجه هزار",
      "m2": "همه رزمجویان سازنده کار",
      "verse_number": 33
    },
    {
      "id": "609e67e4-f478-4ebe-b9a7-785a88fa4564",
      "m1": "به شیده که بودش نبرده پسر",
      "m2": "ز گردان جنگی برآورده سر",
      "verse_number": 34
    },
    {
      "id": "6d0503a3-e719-402e-999d-15f282fb1d82",
      "m1": "بدو گفت کین لشکر سرفراز",
      "m2": "سپردم ترا راه خوارزم ساز",
      "verse_number": 35
    },
    {
      "id": "675104d9-7db9-4f7b-853d-92a75595adbd",
      "m1": "نگهبان آن مرز خوارزم باش",
      "m2": "همیشه کمربستهٔ رزم باش",
      "verse_number": 36
    },
    {
      "id": "017d71fa-3c56-4335-90f7-e8fc1ff98d77",
      "m1": "دگر پنجه از نامداران چین",
      "m2": "بفرمود تا کرد پیران گزین",
      "verse_number": 37
    },
    {
      "id": "4c7dec30-a51e-4f6b-a15f-0f11e51dc5ef",
      "m1": "بدو گفت تا شهر ایران برو",
      "m2": "ممان رخت و مه تخت سالار نو",
      "verse_number": 38
    },
    {
      "id": "4d4175a4-837b-42c5-8124-10b21cf2da9a",
      "m1": "در آشتی هیچ گونه مجوی",
      "m2": "سخن جز به جنگ و به کینه مگوی",
      "verse_number": 39
    },
    {
      "id": "522a55e0-dce9-4ce2-bb27-fb4eb8d8f485",
      "m1": "کسی کو برد آب و آتش بهم",
      "m2": "ابر هر دوان کرده باشد ستم",
      "verse_number": 40
    },
    {
      "id": "beaea84e-87f8-4c0a-8bf7-85ba0e32ff53",
      "m1": "دو پر مایه بیدار و دو پهلوان",
      "m2": "یکی پیر و باهوش و دیگر جوان",
      "verse_number": 41
    },
    {
      "id": "03007dea-e13f-48b3-be50-c3b1983faeed",
      "m1": "برفتند با پند افراسیاب",
      "m2": "به آرام پیر و جوان بر شتاب",
      "verse_number": 42
    },
    {
      "id": "fe834ed2-9ad1-4647-b3c2-a6c30256dcc8",
      "m1": "ابا ترگ زرین و کوپال و تیغ",
      "m2": "خروشان به کردار غرنده میغ",
      "verse_number": 43
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 43
  }
}