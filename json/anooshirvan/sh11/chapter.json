    {
      "id": "7928bfeb-5982-4110-b062-4443505b7bf4",
      "m1": "پرامید دارد دل نیک مرد",
      "m2": "دل بدکنش را پر از بیم و درد",
      "verse_number": 154
    },
    {
      "id": "014189d5-8189-44c0-9278-75d68a377d2c",
      "m1": "سپه را بیاراید از گنج خویش",
      "m2": "سوی بدسگال افگند رنج خویش",
      "verse_number": 155
    },
    {
      "id": "b5848e6f-4a4a-4a23-a55f-7033b634b286",
      "m1": "سخن پرسد از بخردان جهان",
      "m2": "بد و نیک دارد ز دشمن نهان",
      "verse_number": 156
    },
    {
      "id": "bd2737ce-3fe0-43f2-8407-99033adcf979",
      "m1": "بپرسید کار پرستش بچیست",
      "m2": "به نیکی یزدان گراینده کیست",
      "verse_number": 157
    },
    {
      "id": "6b96b291-c6e2-4887-8014-ff4cb31fa069",
      "m1": "چنین داد پاسخ که تاریک خوی",
      "m2": "روان اندر آرد بباریک موی",
      "verse_number": 158
    },
    {
      "id": "888c8011-92b2-45d7-9aa9-7b899ed9c7e4",
      "m1": "نخست آنک داند که هست و یکیست",
      "m2": "ترا زین نشان رهنمای اندکیست",
      "verse_number": 159
    },
    {
      "id": "d9edc94f-6eed-4fed-a040-e646f32c3cec",
      "m1": "ازو دارد از کار نیکی سپاس",
      "m2": "بدو باشد ایمن و زو در هراس",
      "verse_number": 160
    },
    {
      "id": "82a8f44a-9963-44b8-ba02-65b2765edbdc",
      "m1": "هراس تو آنگه که جویی گزند",
      "m2": "وزو ایمنی چون بود سودمند",
      "verse_number": 161
    },
    {
      "id": "d3d28f7a-956e-4542-a36b-954286f3778b",
      "m1": "وگر نیک دل باشی و راه جوی",
      "m2": "بود نزد هر کس تو را آبروی",
      "verse_number": 162
    },
    {
      "id": "ac7d67df-4b22-449d-99cb-ef39f9a50a50",
      "m1": "وگر بدکنش باشی و بد تنه",
      "m2": "به دوزخ فرستاده باشی بنه",
      "verse_number": 163
    },
    {
      "id": "72aa6006-253f-4f12-a79f-3e6f0182cf4b",
      "m1": "مباش ایچ گستاخ با این جهان",
      "m2": "که او راز خویش از تو دارد نهان",
      "verse_number": 164
    },
    {
      "id": "1e7df72d-f8d8-4c1a-a2fa-e486eb1625d2",
      "m1": "گراینده باشی بکردار دین",
      "m2": "بداری بدین روزگار گزین",
      "verse_number": 165
    },
    {
      "id": "433c6156-3792-438b-84cd-a088dcf716e0",
      "m1": "خرد را کنی با دل آموزگار",
      "m2": "بکوشی که نفریبدت روزگار",
      "verse_number": 166
    },
    {
      "id": "6de80042-9743-49ce-8157-d08535646f05",
      "m1": "همان نیز یاد گنهکار مرد",
      "m2": "نباشی به بازار ننگ و نبرد",
      "verse_number": 167
    },
    {
      "id": "8a56aa81-dc0b-4f90-898f-da581e47d34d",
      "m1": "غم آن جهان از پی این جهان",
      "m2": "نباید که داری به دل در نهان",
      "verse_number": 168
    },
    {
      "id": "3fe57cad-f47b-4e59-b538-a443d4aa48fa",
      "m1": "نشستنت همواره با بخردان",
      "m2": "گراینده رامش جاودان",
      "verse_number": 169
    },
    {
      "id": "30eeb7ce-19c8-44d5-b14b-8c2325e7873e",
      "m1": "گراینده بادی به فرهنگ و رای",
      "m2": "به یزدان خرد بایدت رهنمای",
      "verse_number": 170
    },
    {
      "id": "5db432a6-cb76-41b5-a7b3-db5eb3ae0b68",
      "m1": "از اندازه بر نگذرانی سخن",
      "m2": "که تو نو به کاری گیتی کهن",
      "verse_number": 171
    },
    {
      "id": "6a32d81c-b694-4f91-8f38-e22e32669b3a",
      "m1": "نگرداندت رامش و رود مست",
      "m2": "نباشدت با مردم بد نشست",
      "verse_number": 172
    },
    {
      "id": "7f20605e-83ad-42e6-9494-01d3ccb4ef98",
      "m1": "بپیچی دل از هرچ نابودنیست",
      "m2": "به بخشای آن را که بخشودنیست",
      "verse_number": 173
    },
    {
      "id": "e2e31874-6f72-43b4-b08b-b90b40e0eeec",
      "m1": "نداری دریغ آنچه داری ز دوست",
      "m2": "اگر دیده خواهد اگر مغز و پوست",
      "verse_number": 174
    },
    {
      "id": "be40c64b-14a3-4511-82d8-6ef4df0dd580",
      "m1": "اگر دوست با دوست گیرد شمار",
      "m2": "نباید که باشد میانجی به کار",
      "verse_number": 175
    },
    {
      "id": "4a5eede1-6e9f-4210-a1d9-8aab0af97961",
      "m1": "چو با مرد بدخواه باشد نشست",
      "m2": "چنان کن که نگشاید او بر تو دست",
      "verse_number": 176
    },
    {
      "id": "f461aa09-3e21-41d1-8d8d-bae25afe84a8",
      "m1": "چو جوید کسی راه بایستگی",
      "m2": "هنر باید و شرم و شایستگی",
      "verse_number": 177
    },
    {
      "id": "cb490b1a-18e6-4991-ba88-92b972169650",
      "m1": "نباید زبان از هنر چیرهتر",
      "m2": "دروغ از هنر نشمرد دادگر",
      "verse_number": 178
    },
    {
      "id": "a881dc35-8da8-42da-9dc8-6caa5f0aa622",
      "m1": "نداند کسی را بزرگی بچیز",
      "m2": "نه خواری بناچیز دارد بنیز",
      "verse_number": 179
    },
    {
      "id": "70932259-c80f-48e5-9916-b330a6874ef8",
      "m1": "اگر بدگمانی گشاید زبان",
      "m2": "توتندی مکن هیچ با بدگمان",
      "verse_number": 180
    },
    {
      "id": "37b4b69c-5f08-4f3e-8b20-cc5db1a8e288",
      "m1": "ازان پس چو سستی گمانی برد",
      "m2": "وز اندازه گفتار او بگذرد",
      "verse_number": 181
    },
    {
      "id": "b187d37f-ac77-40f6-b972-f8cd310fcbfc",
      "m1": "تو پاسخ مر او را باندازه گوی",
      "m2": "سخنهای چرب آور و تازهگوی",
      "verse_number": 182
    },
    {
      "id": "96fba6a1-19eb-47d9-8b7d-bd575dc262ec",
      "m1": "به آزرم اگر بفگنی سوی خویش",
      "m2": "پشیمانی آید به فرجام پیش",
      "verse_number": 183
    },
    {
      "id": "8bc2ba59-040e-4c98-a3a9-1cd42aeee0bf",
      "m1": "چو بیکار باشی مشو رامشی",
      "m2": "نه کارست بیکاری ار باهشی",
      "verse_number": 184
    },
    {
      "id": "f2454faf-ee87-4e36-bd43-6289afecb197",
      "m1": "ز هرکار کردن تو را ننگ نیست",
      "m2": "اگر چند با بوی و با رنگ نیست",
      "verse_number": 185
    },
    {
      "id": "149050ba-9ebb-4330-b3ee-f21fb9caff8d",
      "m1": "به نیکی بهر کار کوشا بود",
      "m2": "همیشه بدانش نیوشا بود",
      "verse_number": 186
    },
    {
      "id": "6313872d-7a26-4c7f-bbbd-7fbca6967887",
      "m1": "به کاری نیازد که فرجام اوی",
      "m2": "پشیمانی و تندی آرد بروی",
      "verse_number": 187
    },
    {
      "id": "42d33462-b482-4aa6-b56a-ee99241de9b2",
      "m1": "ببخشاید از درد بر مستمند",
      "m2": "نیارد دلش سوی درد و گزند",
      "verse_number": 188
    },
    {
      "id": "c2065fdb-d5c3-47f7-a029-354dabef8f32",
      "m1": "خردمند کو دل کند بردبار",
      "m2": "نباشد به چشم جهاندار خوار",
      "verse_number": 189
    },
    {
      "id": "0c6e67e1-0395-4945-a3d4-443421e33877",
      "m1": "بداند که چندست با او هنر",
      "m2": "باندازه یابد ز هر کار بر",
      "verse_number": 190
    },
    {
      "id": "77c79444-d6b0-48e6-8de3-5eae211e7694",
      "m1": "گر افزون ازان دوست بستایدش",
      "m2": "بلندی و کژی بیفزایدش",
      "verse_number": 191
    },
    {
      "id": "ecce0195-1b5b-4150-927a-5f82df920519",
      "m1": "همان مرد ایزد ندارد به رنج",
      "m2": "وگر چند گردد پراگنده گنج",
      "verse_number": 192
    },
    {
      "id": "1d195bb5-5ee0-4e13-a6b9-60d6b10c09bb",
      "m1": "پرستش کند پیشه و راستی",
      "m2": "بپیچد ز بیراهی و کاستی",
      "verse_number": 193
    },
    {
      "id": "140d5803-69fd-4ca9-971e-e26c3f92572f",
      "m1": "برین برگ واین شاخها آخت دست",
      "m2": "هنرمند دینی و یزدان پرست",
      "verse_number": 194
    },
    {
      "id": "92821e7e-7f6f-42c3-84af-fad319f1f88d",
      "m1": "همانست رای و همینست راه",
      "m2": "به یزدان گرای و به یزدان پناه",
      "verse_number": 195
    },
    {
      "id": "2fb9d340-5e72-4177-913f-298f99fde8b6",
      "m1": "اگر دادگر باشدی شهریار",
      "m2": "ازو ماند اندر جهان یادگار",
      "verse_number": 196
    },
    {
      "id": "421e48a6-eac3-48da-868b-76a12a5d8452",
      "m1": "چنان هم که از داد نوشین روان",
      "m2": "کجا خاک شد نام ماندش جوان",
      "verse_number": 197
    }
  ],
