{
  "id": "9696fc29-0a0d-4438-b9b2-34981057758f",
  "title": "بخش ۱۱ - سخن پرسیدن موبد ازکسری",
  "verses": [
    {
      "id": "59892c5c-c8a1-4b84-aba7-7c0d27b193a2",
      "m1": "یکی پیر بد پهلوانی سخن",
      "m2": "به گفتار و کردار گشته کهن",
      "verse_number": 1
    },
    {
      "id": "6a8680a7-9ae2-426c-8256-785a6d87b5d6",
      "m1": "چنین گوید از دفتر پهلوان",
      "m2": "که پرسید موبد ز نوشینروان",
      "verse_number": 2
    },
    {
      "id": "d2091edd-17f2-497e-9d4f-2d306161deb4",
      "m1": "که آن چیست کز کردگار جهان",
      "m2": "بخواهد پرستنده اندر نهان",
      "verse_number": 3
    },
    {
      "id": "dfcfac2c-73a2-4d15-aa47-0b9e48b07f37",
      "m1": "بدان آرزو نیز پاسخ دهد",
      "m2": "بدان پاسخش بخت فرخ نهد",
      "verse_number": 4
    },
    {
      "id": "b42f005b-942b-4193-af20-c3baa4313f95",
      "m1": "یکی دست برداشته به آسمان",
      "m2": "همیخواهد از کردگار جهان",
      "verse_number": 5
    },
    {
      "id": "ab02b53f-8b32-45b4-8c77-db1167353992",
      "m1": "نیابد بخواهش همه آرزو",
      "m2": "دوچشمش پر از آب و پر چینش رو",
      "verse_number": 6
    },
    {
      "id": "b6e35db0-2d48-4933-b2d5-f8ee3410412d",
      "m1": "به موبد چنین گفت پیروز شاه",
      "m2": "که خواهش ز یزدان به اندازه خواه",
      "verse_number": 7
    },
    {
      "id": "68733b99-50ab-44e6-911c-d2af9a1d9b66",
      "m1": "کزان آرزو دل پراز خون شود",
      "m2": "که خواهد که زاندازه بیرون شود",
      "verse_number": 8
    },
    {
      "id": "a2779f54-c5e6-4516-905a-5306ff254bde",
      "m1": "بپرسید نیکی کرا درخورست",
      "m2": "بنام بزرگی که زیباترست",
      "verse_number": 9
    },
    {
      "id": "8d6768fc-6536-4e39-b6e9-edf27e9676e9",
      "m1": "چنین داد پاسخ که هرکس که گنج",
      "m2": "بیابد پراگنده نابرده رنج",
      "verse_number": 10
    },
    {
      "id": "7d328c69-d28a-43e3-9369-54d897768791",
      "m1": "نبخشد نباشد سزاوار تخت",
      "m2": "زمان تا زمان تیره گرددش بخت",
      "verse_number": 11
    },
    {
      "id": "7a5f00b1-acfb-49cc-80e3-53cca79323a9",
      "m1": "ز هستی وبخشش بود مرد مه",
      "m2": "تو ار گنج داری نبخشی نه به",
      "verse_number": 12
    },
    {
      "id": "d2dc7756-392e-4d17-94e9-021b92791a57",
      "m1": "بگفتش خرد راکه بنیاد چیست",
      "m2": "بشاخ و ببرگ خرد شاد کیست",
      "verse_number": 13
    },
    {
      "id": "8c5fa690-7b2f-45d9-b1b9-52fce6336132",
      "m1": "چنین داد پاسخ که داناست شاد",
      "m2": "دگر آنک شرمش بود با نژاد",
      "verse_number": 14
    },
    {
      "id": "532015d6-0e25-4c18-b0dc-0fcaa6691e6e",
      "m1": "بپرسید دانش کرا سودمند",
      "m2": "کدامست بیدانش و بیگزند",
      "verse_number": 15
    },
    {
      "id": "99448815-e2ea-49a7-b359-c333cab79bcf",
      "m1": "چنین داد پاسخ که هر کو خرد",
      "m2": "بپرورد جان را همیپرورد",
      "verse_number": 16
    },
    {
      "id": "23092658-d84a-4a0e-b5d4-e64855a07577",
      "m1": "ز بیشی خرد را بود سودمند",
      "m2": "همان بی خرد باشد اندر گزند",
      "verse_number": 17
    },
    {
      "id": "ce2df3f9-d673-4d8f-a005-10674e090b71",
      "m1": "بگفتش که دانش به از فر شاه",
      "m2": "که فر و بزرگیست زیبای گاه",
      "verse_number": 18
    },
    {
      "id": "f033f50f-9b4e-4cc5-9bb1-29e90936d4a1",
      "m1": "چنین داد پاسخ که دانا بفر",
      "m2": "بگیرد جهان سر به سر زیر پر",
      "verse_number": 19
    },
    {
      "id": "c5d5511f-588d-4238-b42f-a300cacae67b",
      "m1": "خرد باید و نام و فرو نژاد",
      "m2": "بدین چار گیرد سپهر از تو یاد",
      "verse_number": 20
    },
    {
      "id": "b9037957-5e3c-4342-a4bf-8063586c35d5",
      "m1": "چنین گفت زان پس که زیبای تخت",
      "m2": "کدامست وز کیست ناشاد بخت",
      "verse_number": 21
    },
    {
      "id": "b8fafb9d-d896-48f4-87df-dc372b7737c5",
      "m1": "چنین داد پاسخ که یاری نخست",
      "m2": "بباید ز شاه جهاندار جست",
      "verse_number": 22
    },
    {
      "id": "4af5f6fc-4712-427c-b4d3-35fbc88c0146",
      "m1": "دگر بخشش و دانش و رسم گاه",
      "m2": "دلش پر ز بخشایش دادخواه",
      "verse_number": 23
    },
    {
      "id": "7ce6b963-f320-4347-ac8c-bca32b8bbe21",
      "m1": "ششم نیز کانرا دهد مهتری",
      "m2": "که باشد سزوار بر بهتری",
      "verse_number": 24
    },
    {
      "id": "62afa5bd-0057-4597-9301-5d05f8068d37",
      "m1": "به هفتم که از نیک و بد درجهان",
      "m2": "سخنها بروبر نماند نهان",
      "verse_number": 25
    },
    {
      "id": "38735ef9-0b94-4ad9-9a58-2e070ba73b2f",
      "m1": "چوفر و خرد دارد و دین و بخت",
      "m2": "سزوار تاجست و زیبای تخت",
      "verse_number": 26
    },
    {
      "id": "49369713-d058-494f-9f81-69a4d9fefde3",
      "m1": "بهشتم که دشمن بداند ز دوست",
      "m2": "بیآزاری از شهریاران نکوست",
      "verse_number": 27
    },
    {
      "id": "b0690dd9-9ed3-4f69-bfca-1e1b66180bf6",
      "m1": "نماند پس ازمرگ او نام زشت",
      "m2": "بیابد به فرجام خرم بهشت",
      "verse_number": 28
    },
    {
      "id": "2ad2871d-c0ea-43c9-9681-087e44d77a92",
      "m1": "بپرسیدش از داد و خردک منش",
      "m2": "ز نیکی وز مردم بدکنش",
      "verse_number": 29
    },
    {
      "id": "95bbf1c1-6cda-4ac0-b707-9def0f681286",
      "m1": "چنین داد پاسخ که آز و نیاز",
      "m2": "دو دیوند بدگوهر و دیر ساز",
      "verse_number": 30
    },
    {
      "id": "675e5fa7-55a9-4b34-aae8-4ccbca23df18",
      "m1": "هرآنکس که بیشی کند آرزوی",
      "m2": "بدو دیو او باز گردد بخوی",
      "verse_number": 31
    },
    {
      "id": "d7ff4a8c-3bf9-4d92-ace2-dc20c72aa0e1",
      "m1": "وگر سفلگی برگزید او ز رنج",
      "m2": "گزیند برین خاک آگنده گنج",
      "verse_number": 32
    },
    {
      "id": "10d0dac3-155b-45a2-a71d-374f2d68ca57",
      "m1": "چو بیچاره دیوی بود دیرساز",
      "m2": "که هر دو بیک خو گرایند باز",
      "verse_number": 33
    },
    {
      "id": "abeb109f-d5c7-4317-b6f8-e08d8defd4e2",
      "m1": "بپرسید و گفتا که چندست و چیست",
      "m2": "که بهری برو هم بباید گریست",
      "verse_number": 34
    },
    {
      "id": "89cdf559-0aa9-406b-a9f3-f8619b2c6b4f",
      "m1": "دگر بهر ازو گنج و تاجست و نام",
      "m2": "ازان مستمندیم و زین شادکام",
      "verse_number": 35
    },
    {
      "id": "eeb0d53c-b7cc-479a-b38a-2b6c5d5cc5d5",
      "m1": "چنین داد پاسخ که دانا سخن",
      "m2": "ببخشید واندیشه افگند بن",
      "verse_number": 36
    },
    {
      "id": "cba1f188-26b2-4a15-a251-43b7025d7a2e",
      "m1": "نخستین سخن گفتن سودمند",
      "m2": "خوش آواز خواند ورا بیگزند",
      "verse_number": 37
    },
    {
      "id": "88960324-2a08-4a93-980a-157540f44925",
      "m1": "دگر آنک پیمان سخن خواستن",
      "m2": "سخنگوی و بینا دل آراستن",
      "verse_number": 38
    },
    {
      "id": "1227db35-45cf-4d87-9bca-02c465ca1da4",
      "m1": "که چندان سراید که آید به کار",
      "m2": "وزو ماند اندر جهان یادگار",
      "verse_number": 39
    },
    {
      "id": "0c3f26ef-1ffb-480a-9f72-46e176c9815d",
      "m1": "سه دیگر سخنگوی هنگام جوی",
      "m2": "بماند همه ساله بر آب روی",
      "verse_number": 40
    },
    {
      "id": "0c9c9d24-ca92-4854-a7d6-9c8fd5aaac8f",
      "m1": "چهارم که دانا دلارای خواند",
      "m2": "سراینده را مرد بارای خواند",
      "verse_number": 41
    },
    {
      "id": "40bb9833-a908-43e2-8e15-e5112cfd2b01",
      "m1": "که پیوسته گوید سراسر سخن",
      "m2": "اگر نو بود داستان گر کهن",
      "verse_number": 42
    },
    {
      "id": "63bca8bf-d135-4976-81ff-4d90ae0301c0",
      "m1": "به پنجم که باشد سخنگوی گرم",
      "m2": "بشیرین سخن هم به آواز نرم",
      "verse_number": 43
    },
    {
      "id": "243bc009-8cea-494c-b366-dc61ea3cce1f",
      "m1": "سخن چون یک اندر دگر بافتی",
      "m2": "ازو بیگمان کام دل یافتی",
      "verse_number": 44
    },
    {
      "id": "426bb4f3-378d-4c8f-a8f8-3fb15d0b1ba7",
      "m1": "بپرسید چندی که آموختی",
      "m2": "روان را به دانش بیفروختی",
      "verse_number": 45
    },
    {
      "id": "90270147-72ac-4fc7-8dc6-d774ffa2b2b0",
      "m1": "چنین گفت کز هرک آموختم",
      "m2": "همه فام جان وخرد توختم",
      "verse_number": 46
    },
    {
      "id": "1efb177e-802c-4c66-b1d0-39453f60c33c",
      "m1": "همیپرسم از ناسزایان سخن",
      "m2": "چه گویی که دانش کی آید ببن",
      "verse_number": 47
    },
    {
      "id": "da95e6e9-6590-44bc-a932-74c7e76abdda",
      "m1": "بدانش نگر دور باش از گناه",
      "m2": "که دانش گرامیتر از تاج و گاه",
      "verse_number": 48
    },
    {
      "id": "62919255-546f-4758-9e7f-32b8e9d5d859",
      "m1": "بپرسید کس را از آموختن",
      "m2": "ستایش ندیدم و افروختن",
      "verse_number": 49
    },
    {
      "id": "03865026-368f-4733-9e55-860e414b3c0a",
      "m1": "که نیزش ز دانا بباید شنید",
      "m2": "نگویم کسی کو بجایی رسید",
      "verse_number": 50
    },
    {
      "id": "466f299d-d705-4899-915f-8f09416b0c49",
      "m1": "چنین داد پاسخ که از گنج سیر",
      "m2": "که آید مگر خاکش آرد بزیر",
      "verse_number": 51
    },
    {
      "id": "96cbbf75-baf8-4166-87c7-36de0b202b0e",
      "m1": "در دانش از گنج نامی ترست",
      "m2": "همان نزد دانا گرامی ترست",
      "verse_number": 52
    },
    {
      "id": "e6d8c630-6b62-4da1-8770-c9626d5bd307",
      "m1": "سخن ماند از ما همی یادگار",
      "m2": "تو با گنج دانش برابر مدار",
      "verse_number": 53
    },
    {
      "id": "1e05eda3-f660-4101-b2f2-914077140066",
      "m1": "بپرسید دانا شود مرد پیر",
      "m2": "گر آموزشی باشد و یادگیر",
      "verse_number": 54
    },
    {
      "id": "396aeb1f-8b2e-4aca-ae88-e2e7a4bc9d3e",
      "m1": "چنین داد پاسخ که دانای پیر",
      "m2": "ز دانش جوانی بود ناگزیر",
      "verse_number": 55
    },
    {
      "id": "4d6d37e1-286b-4678-8407-9b421c573d9d",
      "m1": "بر ابله جوانی گزینی رواست",
      "m2": "که بیگور اوخاک او بینواست",
      "verse_number": 56
    },
    {
      "id": "b28b20cd-fef8-4e3e-bc16-dfe44775928f",
      "m1": "بپرسید کز تخت شاهنشهان",
      "m2": "بکردی همه شهریار جهان",
      "verse_number": 57
    },
    {
      "id": "9f124532-7cee-4577-b834-27ca13b19089",
      "m1": "کنون نامشان بیش یاد آوریم",
      "m2": "بیاد از جگر سرد باد آوریم",
      "verse_number": 58
    },
    {
      "id": "4baed27b-a67a-44e7-980c-52758d9e6ef5",
      "m1": "چنین داد پاسخ که در دل نبود",
      "m2": "که آن رسم را خود نباید ستود",
      "verse_number": 59
    },
    {
      "id": "a5be2451-8f15-4fae-b3df-357b1d38b2d9",
      "m1": "بشمشیر و داد این جهان داشتن",
      "m2": "چنین رفتن و خوار بگذاشتن",
      "verse_number": 60
    },
    {
      "id": "0f2175c9-5977-4141-8cc9-e2856f18cc57",
      "m1": "بپرسید با هر کسی پیش ازین",
      "m2": "سخن راندی نامور بیش ازین",
      "verse_number": 61
    },
    {
      "id": "d300fa3a-0922-4953-a210-f29e361a7f53",
      "m1": "سبک دارد اکنون نگوید سخن",
      "m2": "نه از نو نه از روزگار کهن",
      "verse_number": 62
    },
    {
      "id": "42b0071b-0e39-4475-9c14-8685256af5b3",
      "m1": "چنین داد پاسخ که گفتاربس",
      "m2": "بکردار جویم همه دسترس",
      "verse_number": 63
    },
    {
      "id": "68946eda-0d68-4b48-987c-4e08fcb9fa7f",
      "m1": "بپرسید هنگام شاهان نماز",
      "m2": "نبودی چنین پیش ایشان دراز",
      "verse_number": 64
    },
    {
      "id": "7794e871-078c-4ae7-b307-fd6266e585ad",
      "m1": "شما را ستایش فزونست ازان",
      "m2": "خروش و نیایش فزونست ازان",
      "verse_number": 65
    },
    {
      "id": "6dbb5871-7d19-407a-9c75-7a3aab4411b0",
      "m1": "چنین داد پاسخ که یزدانپاک",
      "m2": "پرستنده را سر برآرد ز خاک",
      "verse_number": 66
    },
    {
      "id": "4ab42c15-8714-4b17-bd98-712afea2b886",
      "m1": "فلک را گزارنده او کند",
      "m2": "جهان راهمه بندهٔ او کند",
      "verse_number": 67
    },
    {
      "id": "802e0085-9310-475d-b386-856157a0d755",
      "m1": "گر این بنده آن را نداند بها",
      "m2": "مبادا ز درد و ز سختی رها",
      "verse_number": 68
    },
    {
      "id": "8c404092-8f18-4b7b-b4ab-76662a1ac90a",
      "m1": "بپرسید تا توشدی شهریار",
      "m2": "سپاست فزون چیست از کردگار",
      "verse_number": 69
    },
    {
      "id": "7e7b0e0a-e512-45c6-b977-6aa5f0de1029",
      "m1": "کزان مر تو را دانش افزون شدست",
      "m2": "دل بدسگالان پر از خون شدست",
      "verse_number": 70
    },
    {
      "id": "0be33e6d-0389-4d81-a3a1-613a2578771a",
      "m1": "چنین داد پاسخ که از کردگار",
      "m2": "سپاس آنک گشتیم به روزگار",
      "verse_number": 71
    },
    {
      "id": "95bc12ed-d8ae-4a9d-bdc4-9f47e387671e",
      "m1": "کسی پیش من برفزونی نجست",
      "m2": "وز آواز من دست بد را بشست",
      "verse_number": 72
    },
    {
      "id": "e2d58281-9cfd-4aba-86da-6319d2588539",
      "m1": "زبون بود بدخواه در جنگ من",
      "m2": "چو گوپال من دید و اورنگ من",
      "verse_number": 73
    },
    {
      "id": "a04f7dd3-cb6a-40e0-802b-8f624b31d38b",
      "m1": "بپرسید درجنگ خاور بدی",
      "m2": "چنان تیز چنگ و دلاور بدی",
      "verse_number": 74
    },
    {
      "id": "f2c10fec-2c49-4a38-9f4d-a887be145b3a",
      "m1": "چو با باختر ساختی ساز جنگ",
      "m2": "شکیبایی آراستی با درنگ",
      "verse_number": 75
    },
    {
      "id": "1e95a5be-9ca3-4cb7-a850-4d43c6550bae",
      "m1": "چنین داد پاسخ که مرد جوان",
      "m2": "نیندیشد از رنج و درد روان",
      "verse_number": 76
    },
    {
      "id": "43b9f9c3-5c41-4f62-bbdb-a8729ee65c30",
