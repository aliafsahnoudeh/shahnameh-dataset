{
  "id": "4a7d39ee-0010-4721-b45d-90250044e4fe",
  "title": "بخش ۱۶",
  "verses": [
    {
      "id": "8d3217d2-785a-408b-8cbe-a91a03852364",
      "m1": "بدو گفت رستم که آرام گیر",
      "m2": "چه گویی سخنهای نادلپذیر",
      "verse_number": 1
    },
    {
      "id": "9202562f-3f94-424f-9541-a517957f297a",
      "m1": "دلت بیش کژی بپالد همی",
      "m2": "روانت ز دیوان ببالد همی",
      "verse_number": 2
    },
    {
      "id": "5eb71217-16ba-4a98-8a29-abc0ce8b6dbd",
      "m1": "تو آن گوی کز پادشاهان سزاست",
      "m2": "نگوید سخن پادشا جز که راست",
      "verse_number": 3
    },
    {
      "id": "c2f6f393-e323-4634-b895-d598410abbb8",
      "m1": "جهاندار داند که دستان سام",
      "m2": "بزرگست و بادانش و نیکنام",
      "verse_number": 4
    },
    {
      "id": "8c8cd4e2-7ca9-44aa-965c-46d1cc6476d1",
      "m1": "همان سام پور نریمان بدست",
      "m2": "نریمان گرد از کریمان بدست",
      "verse_number": 5
    },
    {
      "id": "06f59fdf-dcb3-4ab4-8f2d-e91b13c27c9a",
      "m1": "بزرگست و گرشاسپ بودش پدر",
      "m2": "به گیتی بدی خسرو تاجور",
      "verse_number": 6
    },
    {
      "id": "74da7af8-0cbb-4888-be46-f67b6baca3a9",
      "m1": "همانا شنیدستی آواز سام",
      "m2": "نبد در زمانه چنو نیکنام",
      "verse_number": 7
    },
    {
      "id": "03efdf0a-4349-49ea-aeb1-c1bcfb788238",
      "m1": "بکشتش به طوس اندرون اژدها",
      "m2": "که از چنگ او کس نیابد رها",
      "verse_number": 8
    },
    {
      "id": "29dcd4f4-e6d1-4f31-b6fc-13fafdb205f5",
      "m1": "به دریا نهنگ و به خشکی پلنگ",
      "m2": "ورا کس ندیدی گریزان ز جنگ",
      "verse_number": 9
    },
    {
      "id": "21223c1b-44ef-4a57-a581-2269684be396",
      "m1": "به دریا سر ماهیان برفروخت",
      "m2": "هماندر هوا پر کرگس بسوخت",
      "verse_number": 10
    },
    {
      "id": "4d210ba5-19aa-4b4d-bdb5-d58556ef8aca",
      "m1": "همی پیل را درکشیدی به دم",
      "m2": "دل خرم از یاد او شدم دژم",
      "verse_number": 11
    },
    {
      "id": "901f3510-5766-4869-badf-33f7b98606bf",
      "m1": "و دیگر یکی دیو بُد بدگمان",
      "m2": "تنش بر زمین و سرش بآسمان",
      "verse_number": 12
    },
    {
      "id": "f536b761-4fe0-470e-b166-2002698acd7e",
      "m1": "که دریای چین تا میانش بدی",
      "m2": "ز تابیدن خور زیانش بدی",
      "verse_number": 13
    },
    {
      "id": "55337a1a-3f6d-453d-be55-eda1b773f005",
      "m1": "همی ماهی از آب برداشتی",
      "m2": "سر از گنبد ماه بگذاشتی",
      "verse_number": 14
    },
    {
      "id": "60689ccf-50f8-4788-acf1-e6beefbcc152",
      "m1": "به خورشید ماهیش بریان شدی",
      "m2": "ازو چرخ گردنده گریان شدی",
      "verse_number": 15
    },
    {
      "id": "bae84c78-76eb-4315-9aaa-c442613a5134",
      "m1": "دو پتیاره زین گونه پیچان شدند",
      "m2": "ز تیغ یلی هر دو بیجان شدند",
      "verse_number": 16
    },
    {
      "id": "b755703c-60bf-466f-9da0-2ff4cf190630",
      "m1": "همان مادرم دخت مهراب بود",
      "m2": "بدو کشور هند شاداب بود",
      "verse_number": 17
    },
    {
      "id": "f6aec55c-6cc1-4530-815c-d391e46e786d",
      "m1": "که ضحاک بودیش پنجم پدر",
      "m2": "ز شاهان گیتی برآورده سر",
      "verse_number": 18
    },
    {
      "id": "cc22bf55-33ba-46bc-8fd2-ff6cc0f22fc1",
      "m1": "نژادی ازین نامورتر کراست",
      "m2": "خردمند گردن نپیچد ز راست",
      "verse_number": 19
    },
    {
      "id": "59d29339-63c9-4223-8bc3-1d895b43452a",
      "m1": "دگر آنک اندر جهان سربسر",
      "m2": "یلان را ز من جست باید هنر",
      "verse_number": 20
    },
    {
      "id": "7100effb-2c23-4e5f-8dfb-4ef25f5a3776",
      "m1": "همان عهد کاوس دارم نخست",
      "m2": "که بر من بهانه نیارند جست",
      "verse_number": 21
    },
    {
      "id": "14d619da-07cc-4e37-b32d-bd9436153e62",
      "m1": "همان عهد کیخسرو دادگر",
      "m2": "که چون او نبست از کیان کس کمر",
      "verse_number": 22
    },
    {
      "id": "9780e736-b57b-429e-821d-04bb4a739fa5",
      "m1": "زمین را سراسر همه گشتهام",
      "m2": "بسی شاه بیدادگر کشتهام",
      "verse_number": 23
    },
    {
      "id": "e483693a-c858-43e0-8af4-c4a11f6d5517",
      "m1": "چو من برگذشتم ز جیحون بر آب",
      "m2": "ز توران به چین آمد افراسیاب",
      "verse_number": 24
    },
    {
      "id": "8c6ed25f-4efe-4e4a-b70c-528daf03ff5b",
      "m1": "ز کاوس در جنگ هاماوران",
      "m2": "به تنها برفتم به مازندران",
      "verse_number": 25
    },
    {
      "id": "6dc33d31-cddc-4032-b4e1-295f357dd70c",
      "m1": "نه ارژنگ ماندم نه دیو سپید",
      "m2": "نه سنجه نه اولاد غندی نه بید",
      "verse_number": 26
    },
    {
      "id": "8e05856c-3c4d-4042-830a-c210af116bf9",
      "m1": "همی از پی شاه فرزند را",
      "m2": "بکشتم دلیر خردمند را",
      "verse_number": 27
    },
    {
      "id": "982be025-11e5-4529-8ffd-029f037cbd3f",
      "m1": "که گردی چو سهراب هرگز نبود",
      "m2": "به زور و به مردی و رزم آزمود",
      "verse_number": 28
    },
    {
      "id": "575d9257-451a-4c10-9d18-36f26bfca5b6",
      "m1": "ز پانصد همانا فزونست سال",
      "m2": "که تا من جدا گشتم از پشت زال",
      "verse_number": 29
    },
    {
      "id": "cdec0aa3-527b-42f3-b9ba-b10639b7e9dc",
      "m1": "همی پهلوان بودم اندر جهان",
      "m2": "یکی بود با آشکارم نهان",
      "verse_number": 30
    },
    {
      "id": "151dcd10-b847-4ece-b4aa-2133c93d46f6",
      "m1": "به سان فریدون فرخنژاد",
      "m2": "که تاج بزرگی به سر بر نهاد",
      "verse_number": 31
    },
    {
      "id": "4fabbea2-2172-4eee-84b6-7d5fd1e68704",
      "m1": "ز تخت اندرآورد ضحاک را",
      "m2": "سپرد آن سر و تاج او خاک را",
      "verse_number": 32
    },
    {
      "id": "50cec996-5ee0-4eb3-bdfd-f3d06fc590fe",
      "m1": "دگر سام کو بود ما را نیا",
      "m2": "ببرد از جهان دانش و کیمیا",
      "verse_number": 33
    },
    {
      "id": "d41437a8-ed9b-4852-a61b-d2c5298de879",
      "m1": "سه دیگر که چون من ببستم کمر",
      "m2": "تن آسان شد اندر جهان تاجور",
      "verse_number": 34
    },
    {
      "id": "b4305812-9030-4aed-ac24-a726e0c0f501",
      "m1": "بران خرمی روز هرگز نبود",
      "m2": "پی مرد بیراه بر دز نبود",
      "verse_number": 35
    },
    {
      "id": "3272cd50-72b2-4bc2-9207-df19665cb642",
      "m1": "که من بودم اندر جهان کامران",
      "m2": "مرا بود شمشیر و گرز گران",
      "verse_number": 36
    },
    {
      "id": "e835c2ab-9362-49f7-8c04-0ed4e73c31c5",
      "m1": "بدان گفتم این تا بدانی همه",
      "m2": "تو شاهی و گردنکشان چون رمه",
      "verse_number": 37
    },
    {
      "id": "b95066bd-f5e2-43ae-ade2-22b9531684a9",
      "m1": "تو اندر زمانه رسیده نوی",
      "m2": "اگر چند با فر کیخسروی",
      "verse_number": 38
    },
    {
      "id": "9b44f52f-2e0f-4fb1-a8cd-5f792e3d0ae3",
      "m1": "تن خویش بینی همی در جهان",
      "m2": "نهای آگه از کارهای نهان",
      "verse_number": 39
    },
    {
      "id": "810f5171-8af9-46b0-9c17-ea2406b1e461",
      "m1": "چو بسیار شد گفتها میخوریم",
      "m2": "به می جان اندیشه را بشکریم",
      "verse_number": 40
    }
  ],
  "poem_info": {
