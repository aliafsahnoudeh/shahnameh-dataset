{
  "id": "99cceb78-4e08-4a3e-9957-f02e96c5b648",
  "title": "بخش ۲۲",
  "verses": [
    {
      "id": "7c3b2b20-fed7-4bd0-97c0-36cab5b86b98",
      "m1": "چو شد روز رستم بپوشید گبر",
      "m2": "نگهبان تن کرد بر گبر ببر",
      "verse_number": 1
    },
    {
      "id": "4ae58773-819c-44ea-8173-36871e69ced8",
      "m1": "کمندی به فتراک زین برببست",
      "m2": "بران بارهٔ پیل پیکر نشست",
      "verse_number": 2
    },
    {
      "id": "0fd69072-0949-4015-870e-301e7008d134",
      "m1": "بفرمود تا شد زواره برش",
      "m2": "فراوان سخن راند از لشکرش",
      "verse_number": 3
    },
    {
      "id": "46435f75-4418-45b8-a6f5-3c008bf8e6b6",
      "m1": "بدو گفت رو لشکر آرای باش",
      "m2": "بر کوههٔ ریگ بر پای باش",
      "verse_number": 4
    },
    {
      "id": "cb92cfe3-14dc-462f-a09a-273e4c4f7847",
      "m1": "بیامد زواره سپه گرد کرد",
      "m2": "به میدان کار و به دشت نبرد",
      "verse_number": 5
    },
    {
      "id": "bd65f0b2-65e8-49a9-96e5-53e29c3c0aa4",
      "m1": "تهمتن همی رفت نیزه به دست",
      "m2": "چو بیرون شد از جایگاه نشست",
      "verse_number": 6
    },
    {
      "id": "f491e9fd-3789-4eba-9edf-513fc1384a1f",
      "m1": "سپاهش برو خواندند آفرین",
      "m2": "که بیتو مباد اسپ و گوپال و زین",
      "verse_number": 7
    },
    {
      "id": "d6ecb15c-db3b-49c0-9080-b45c04bd0e6c",
      "m1": "همی رفت رستم زواره پسش",
      "m2": "کجا بود در پادشاهی کسش",
      "verse_number": 8
    },
    {
      "id": "89dd7522-5e9d-4858-a3aa-f74d84d44b59",
      "m1": "بیامد چنان تا لب هیرمند",
      "m2": "همه دل پر از باد و لب پر ز پند",
      "verse_number": 9
    },
    {
      "id": "3afa1ce9-f8ce-431d-b58d-e2e6b216e079",
      "m1": "سپه با برادر هم آنجا بماند",
      "m2": "سوی لشکر شاه ایران براند",
      "verse_number": 10
    },
    {
      "id": "7aeff9ce-388b-44e0-9e65-b457475f06fb",
      "m1": "چنین گفت پس با زواره به راز",
      "m2": "که مردیست این بدرگ دیوساز",
      "verse_number": 11
    },
    {
      "id": "5beab6fb-2d63-4082-8de6-add4e166c081",
      "m1": "بترسم که با او نیارم زدن",
      "m2": "ندانم کزین پس چه شاید بدن",
      "verse_number": 12
    },
    {
      "id": "7574568f-2466-4071-a0ad-0e11186571f3",
      "m1": "تو اکنون سپه را هم ایدر بدار",
      "m2": "شوم تا چه پیش آورد روزگار",
      "verse_number": 13
    },
    {
      "id": "fbe3deb6-2efe-4992-bb7e-dfe575c972c8",
      "m1": "اگر تند یابمش هم زان نشان",
      "m2": "نخواهم ز زابلستان سرکشان",
      "verse_number": 14
    },
    {
      "id": "d7a50fe7-1bb2-4803-98b7-b530328c888c",
      "m1": "به تنها تن خویش جویم نبرد",
      "m2": "ز لشکر نخواهم کسی رنجه کرد",
      "verse_number": 15
    },
    {
      "id": "12fd2099-aaaf-432b-a708-1bf826f7c77e",
      "m1": "کسی باشد از بخت پیروز و شاد",
      "m2": "که باشد همیشه دلش پر ز داد",
      "verse_number": 16
    },
    {
      "id": "c6f6fc5e-b116-47d2-bfc5-d3db129cbc43",
      "m1": "گذشت از لب رود و بالا گرفت",
      "m2": "همی ماند از کار گیتی شگفت",
      "verse_number": 17
    },
    {
      "id": "9bd08f65-cdc6-478f-b690-ab35f471be44",
      "m1": "خروشید کای فرخ اسفندیار",
      "m2": "هماوردت آمد برآرای کار",
      "verse_number": 18
    },
    {
      "id": "bd0d1b36-1a52-43bd-b78b-e25e9410fbc1",
      "m1": "چو بشنید اسفندیار این سخن",
      "m2": "ازان شیر پرخاشجوی کهن",
      "verse_number": 19
    },
    {
      "id": "ddb9ae68-bdef-47b3-b38a-3c73fcd3117e",
      "m1": "بخندید و گفت اینک آراستم",
      "m2": "بدانگه که از خواب برخاستم",
      "verse_number": 20
    },
    {
      "id": "8716fa6a-f9e8-4976-8e91-c75daedb6ef8",
      "m1": "بفرمود تا جوشن و خود اوی",
      "m2": "همان ترکش و نیزهٔ جنگجوی",
      "verse_number": 21
    },
    {
      "id": "25d14c5d-87e3-4d66-9fc7-08a6dcb190c2",
      "m1": "ببردند و پوشید جوشن برش",
      "m2": "نهاد آن کلاه کیی بر سرش",
      "verse_number": 22
    },
    {
      "id": "aaa92d2b-caaf-4e94-bd69-06d18846de01",
      "m1": "بفرمود تا زین بر اسپ سیاه",
      "m2": "نهادند و بردند نزدیک شاه",
      "verse_number": 23
    },
    {
      "id": "ca5016ee-3cb8-45f8-a311-db6c8e03db3f",
      "m1": "چو جوشن بپوشید پرخاشجوی",
      "m2": "ز زور و ز شادی که بود اندر اوی",
      "verse_number": 24
    },
    {
      "id": "f523bbb5-e1af-4aa9-8b76-466185273805",
      "m1": "نهاد آن بن نیزه را بر زمین",
      "m2": "ز خاک سیاه اندر آمد به زین",
      "verse_number": 25
    },
    {
      "id": "86a2e829-6da1-428a-b6bd-0e82732f9671",
      "m1": "بسان پلنگی که بر پشت گور",
      "m2": "نشیند برانگیزد از گور شور",
      "verse_number": 26
    },
    {
      "id": "ada3ade6-924d-4995-8178-1616ddee54ac",
      "m1": "سپه در شگفتی فروماندند",
      "m2": "بران نامدار آفرین خواندند",
      "verse_number": 27
    },
    {
      "id": "5c861afe-cc71-40cb-a22b-b7602a304935",
      "m1": "همی شد چو نزد تهمتن رسید",
      "m2": "مر او را بران باره تنها بدید",
      "verse_number": 28
    },
    {
      "id": "ae5263a2-21d7-405b-8797-64cac4e3f144",
      "m1": "پس از بارگی با پشوتن بگفت",
      "m2": "که ما را نباید بدو یار و جفت",
      "verse_number": 29
    },
    {
      "id": "998cc750-c5d7-40cc-a9eb-6991db09cdd3",
      "m1": "چو تنهاست ما نیز تنها شویم",
      "m2": "ز پستی بران تند بالا شویم",
      "verse_number": 30
    },
    {
      "id": "35463391-9ff0-420d-a1de-d2a90eebd15e",
      "m1": "بران گونه رفتند هر دو به رزم",
      "m2": "تو گفتی که اندر جهان نیست بزم",
      "verse_number": 31
    },
    {
      "id": "388dc3a5-41fd-4535-aced-423775040b09",
      "m1": "چو نزدیک گشتند پیر و جوان",
      "m2": "دو شیر سرافراز و دو پهلوان",
      "verse_number": 32
    },
    {
      "id": "acfb36fa-a689-4e27-9605-8c04429ef82e",
      "m1": "خروش آمد از بارهٔ هر دو مرد",
      "m2": "تو گفتی بدرید دشت نبرد",
      "verse_number": 33
    },
    {
      "id": "94c4bbfb-c2a3-496e-8ab1-27d6f18becf2",
      "m1": "چنین گفت رستم به آواز سخت",
      "m2": "که ای شاه شاداندل و نیکبخت",
      "verse_number": 34
    },
    {
      "id": "afbc2a98-504c-42ac-b49e-de2b682a4228",
      "m1": "ازین گونه مستیز و بد را مکوش",
      "m2": "سوی مردمی یاز و بازآر هوش",
      "verse_number": 35
    },
    {
      "id": "cb39c59d-5801-4bed-b0c0-a4e411964aa2",
      "m1": "اگر جنگ خواهی و خون ریختن",
      "m2": "برین گونه سختی برآویختن",
      "verse_number": 36
    },
    {
      "id": "fba1f949-5ad9-4c2b-a742-00f4f3250568",
      "m1": "بگو تا سوار آورم زابلی",
      "m2": "که باشند با خنجر کابلی",
      "verse_number": 37
    },
    {
      "id": "21212618-f974-400b-ba25-e3ff9124cb53",
      "m1": "برین رزمگهشان به جنگ آوریم",
      "m2": "خود ایدر زمانی درنگ آوریم",
      "verse_number": 38
    },
    {
      "id": "4ae4afdd-517e-4493-ab8d-8cb895f38c05",
      "m1": "بباشد به کام تو خون ریختن",
      "m2": "ببینی تگاپوی و آویختن",
      "verse_number": 39
    },
    {
      "id": "ca92cc71-0882-42a3-b60f-f0bb7a6e3e20",
      "m1": "چنین پاسخ آوردش اسفندیار",
      "m2": "که چندین چه گویی چنین نابکار",
      "verse_number": 40
    },
    {
      "id": "5afb1421-a221-45af-a62c-18afbf55fe27",
      "m1": "ز ایوان به شبگیر برخاستی",
      "m2": "ازین تند بالا مرا خواستی",
      "verse_number": 41
    },
    {
      "id": "127374ca-71d5-49fa-ad7b-b9dd1bb1d826",
      "m1": "چرا ساختی بند و مکر و فریب",
      "m2": "همانا بدیدی به تنگی نشیب",
      "verse_number": 42
    },
    {
      "id": "2a76415e-fe71-440e-b9ec-978d57baffb9",
      "m1": "چه باید مرا جنگ زابلستان",
      "m2": "وگر جنگ ایران و کابلستان",
      "verse_number": 43
    },
    {
      "id": "8dc3a454-d6fa-4198-9a2d-005b8fb23d52",
      "m1": "مبادا چنین هرگز آیین من",
      "m2": "سزا نیست این کار در دین من",
      "verse_number": 44
    },
    {
      "id": "38c5c5af-215e-4426-b8f6-4edfcab92648",
      "m1": "که ایرانیان را به کشتن دهم",
      "m2": "خود اندر جهان تاج بر سر نهم",
      "verse_number": 45
    },
    {
      "id": "f120491d-c2fb-42b8-ae05-4a469ff28e51",
      "m1": "منم پیشرو هرک جنگ آیدم",
      "m2": "وگر پیش جنگ نهنگ آیدم",
      "verse_number": 46
    },
    {
      "id": "efbb32a4-2b00-45ff-ada1-e56c556090ad",
      "m1": "ترا گر همی یار باید بیار",
      "m2": "مرا یار هرگز نیاید به کار",
      "verse_number": 47
    },
    {
      "id": "829e779a-4251-4eb4-9809-e6783997ff06",
      "m1": "مرا یار در جنگ یزدان بود",
      "m2": "سر و کار با بخت خندان بود",
      "verse_number": 48
    },
    {
      "id": "6c80fe73-53cb-4242-962c-4dadd825b294",
      "m1": "توی جنگجوی و منم جنگخواه",
      "m2": "بگردیم یک با دگر بیسپاه",
      "verse_number": 49
    },
    {
      "id": "c7332c13-c0bb-4cd6-bd6b-7d9500a13b7a",
      "m1": "ببینیم تا اسپ اسفندیار",
      "m2": "سوی آخور آید همی بیسوار",
      "verse_number": 50
    },
    {
      "id": "68418938-8dfb-49b4-873e-f2ee5ed48dc7",
      "m1": "وگر بارهٔ رستم جنگجوی",
      "m2": "به ایوان نهد بیخداوند روی",
      "verse_number": 51
    },
    {
      "id": "d2be49dd-834d-4eb6-bafe-3d408e7e0595",
      "m1": "نهادند پیمان دو جنگی که کس",
      "m2": "نباشد بران جنگ فریادرس",
      "verse_number": 52
    },
    {
      "id": "98b086c9-4e4a-4184-8642-814544e244e0",
      "m1": "نخستین به نیزه برآویختند",
      "m2": "همی خون ز جوشن فرو ریختند",
      "verse_number": 53
    },
    {
      "id": "4f28ef60-a359-4115-b144-305e173478c1",
      "m1": "چنین تا سنانها به هم برشکست",
      "m2": "به شمشیر بردند ناچار دست",
      "verse_number": 54
    },
    {
      "id": "6508be79-212e-4cef-91d3-78b52d842d5b",
      "m1": "به آوردگه گردن افراختند",
      "m2": "چپ و راست هر دو همی تاختند",
      "verse_number": 55
    },
    {
      "id": "54816e1e-ea88-4be5-8925-4f3bf1f2a5ce",
      "m1": "ز نیروی اسپان و زخم سران",
      "m2": "شکسته شد آن تیغهای گران",
      "verse_number": 56
    },
    {
      "id": "dbb8ee6c-795c-48aa-87f7-b90eae531c7b",
      "m1": "چو شیران جنگی برآشوفتند",
      "m2": "پر از خشم اندامها کوفتند",
      "verse_number": 57
    },
    {
      "id": "0fb3bceb-ba90-4762-8481-8fe00832e105",
      "m1": "همان دسته بشکست گرز گران",
      "m2": "فروماند از کار دست سران",
      "verse_number": 58
    },
    {
      "id": "3f7041d3-685a-4336-aabd-0c4e79f69c55",
      "m1": "گرفتند زان پس دوال کمر",
      "m2": "دو اسپ تگاور فروبرده سر",
      "verse_number": 59
    },
    {
      "id": "c4703c1d-f83c-478b-98c7-dab46755d6d9",
      "m1": "همی زور کرد این بران آن برین",
      "m2": "نجنبید یک شیر بر پشت زین",
      "verse_number": 60
    },
    {
      "id": "8fc1571d-d0c9-492e-99bc-a18758359efa",
      "m1": "پراگنده گشتند ز آوردگاه",
      "m2": "غمی گشته اسپان و مردان تباه",
      "verse_number": 61
    },
    {
      "id": "ce460222-abee-4535-9e85-0afa83e796ef",
      "m1": "کف اندر دهانشان شده خون و خاک",
      "m2": "همه گبر و برگستوان چاکچاک",
      "verse_number": 62
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 62
  }
}