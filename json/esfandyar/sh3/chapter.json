{
  "id": "aa9871c6-9b82-4cfb-aa2e-4ca5198ff81e",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "5c5b2b52-2922-4bf5-82e8-26075f382166",
      "m1": "چو بگذشت شب گرد کرده عنان",
      "m2": "برآورد خورشید رخشان سنان",
      "verse_number": 1
    },
    {
      "id": "89692d95-1755-4073-8ad6-aaecfefa0b45",
      "m1": "نشست از بر تخت زر شهریار",
      "m2": "بشد پیش او فرخ اسفندیار",
      "verse_number": 2
    },
    {
      "id": "51afa9cf-c801-4563-919b-8e678dd070c2",
      "m1": "همی بود پیشش پرستارفش",
      "m2": "پراندیشه و دست کرده به کش",
      "verse_number": 3
    },
    {
      "id": "2cef1867-5e95-4bcf-9120-32240138d160",
      "m1": "چو در پیش او انجمن شد سپاه",
      "m2": "ز نامآوران و ز گردان شاه",
      "verse_number": 4
    },
    {
      "id": "1f5d954f-21b6-45ba-86cf-3655f59ad899",
      "m1": "همه موبدان پیش او بر رده",
      "m2": "ز اسپهبدان پیش او صف زده",
      "verse_number": 5
    },
    {
      "id": "91c0a564-19bd-4702-988b-a7a371c5ac3d",
      "m1": "پس اسفندیار آن یل پیلتن",
      "m2": "برآورد از درد آنگه سخن",
      "verse_number": 6
    },
    {
      "id": "05cd3c34-608b-4273-9ad4-e6360506a9f1",
      "m1": "بدو گفت شاها انوشه بدی",
      "m2": "توی بر زمین فره ایزدی",
      "verse_number": 7
    },
    {
      "id": "2bc71211-3877-4072-95d4-f25d10acb5bd",
      "m1": "سر داد و مهر از تو پیدا شدست",
      "m2": "همان تاج و تخت از تو زیبا شدست",
      "verse_number": 8
    },
    {
      "id": "66e3d56d-d3a3-4d53-95ad-3b498443f827",
      "m1": "تو شاهی پدر من ترا بندهام",
      "m2": "همیشه به رای تو پویندهام",
      "verse_number": 9
    },
    {
      "id": "1e400c28-78e7-4d9e-9c60-3e701ab5caf7",
      "m1": "تو دانی که ارجاسپ از بهر دین",
      "m2": "بیامد چنان با سواران چین",
      "verse_number": 10
    },
    {
      "id": "eecda06c-0182-49f1-bdb6-5ce810d3242e",
      "m1": "بخوردم من آن سخت سوگندها",
      "m2": "بپذرفتم آن ایزدی پندها",
      "verse_number": 11
    },
    {
      "id": "f500daef-63c7-4f24-833b-1400d0720711",
      "m1": "که هرکس که آرد به دین در شکست",
      "m2": "دلش تاب گیرد شود بتپرست",
      "verse_number": 12
    },
    {
      "id": "f8d4533c-78e8-47c8-be92-ee3bc7fa3cd1",
      "m1": "میانش به خنجر کنم به دو نیم",
      "m2": "نباشد مرا از کسی ترس و بیم",
      "verse_number": 13
    },
    {
      "id": "e5ef4f06-6c79-409a-9b1a-63fc37a6e383",
      "m1": "وزان پس که ارجاسپ آمد به جنگ",
      "m2": "نبرگشتم از جنگ دشتی پلنگ",
      "verse_number": 14
    },
    {
      "id": "0174c9de-b13f-4b50-aae6-963b990d3a09",
      "m1": "مرا خوار کردی به گفت گُرَزم",
      "m2": "که جام خورش خواستی روز بزم",
      "verse_number": 15
    },
    {
      "id": "f7ec6a25-f457-4ea1-8063-77f4383ba1d1",
      "m1": "ببستی تن من به بند گران",
      "m2": "ستونها و مسمار آهنگران",
      "verse_number": 16
    },
    {
      "id": "688014e6-f783-4cf1-a006-96afd6ebcaa9",
      "m1": "سوی گنبدان دژ فرستادیم",
      "m2": "ز خواری به بدکارگان دادیم",
      "verse_number": 17
    },
    {
      "id": "9e4caa0b-0434-4d37-bc8d-2b6aa78b4ab5",
      "m1": "به زاول شدی بلخ بگذاشتی",
      "m2": "همه رزم را بزم پنداشتی",
      "verse_number": 18
    },
    {
      "id": "742f25ac-02b6-4da4-8da3-c37406e17c35",
      "m1": "بدیدی همی تیغ ارجاسپ را",
      "m2": "فگندی به خون پیر لهراسپ را",
      "verse_number": 19
    },
    {
      "id": "b40469ad-5b9e-4a18-985a-7c5f000bbf29",
      "m1": "چو جاماسپ آمد مرا بسته دید",
      "m2": "وزان بستگیها تنم خسته دید",
      "verse_number": 20
    },
    {
      "id": "d634b139-1ea6-46d9-b3f1-eb9ee7d0a505",
      "m1": "مرا پادشاهی پذیرفت و تخت",
      "m2": "بران نیز چندی بکوشید سخت",
      "verse_number": 21
    },
    {
      "id": "a29aeb3d-310c-47c6-8bd5-3df3b20bcbae",
      "m1": "بدو گفتم این بندهای گران",
      "m2": "به زنجیر و مسمار آهنگران",
      "verse_number": 22
    },
    {
      "id": "2e51962c-ae28-4b0a-8e3c-4427a23d5232",
      "m1": "بمانم چنین هم به فرمان شاه",
      "m2": "نخواهم سپاه و نخواهم کلاه",
      "verse_number": 23
    },
    {
      "id": "e19a8b11-0145-46d5-bc6d-6c9f9bac6a89",
      "m1": "به یزدان نمایم به روز شمار",
      "m2": "بنالم ز بدگوی با کردگار",
      "verse_number": 24
    },
    {
      "id": "1c8ccdf3-e250-4302-ada6-1160cf7293e0",
      "m1": "مرا گفت گر پند من نشنوی",
      "m2": "بسازی ابر تخت بر بدخوی",
      "verse_number": 25
    },
    {
      "id": "d281cd7f-9a06-4898-8d7f-122a8a8df2c4",
      "m1": "دگر گفت کز خون چندان سران",
      "m2": "سرافراز با گُرزهای گران",
      "verse_number": 26
    },
    {
      "id": "a1f5566c-8001-4be7-80e4-a5736b292234",
      "m1": "بران رزمگه خسته تنها به تیر",
      "m2": "همان خواهرانت ببرده اسیر",
      "verse_number": 27
    },
    {
      "id": "e04801e4-4977-4b86-9097-1372c041c5b4",
      "m1": "دگر گرد آزاده فرشیدورد",
      "m2": "فگندست خسته به دشت نبرد",
      "verse_number": 28
    },
    {
      "id": "3be1e79e-1a5e-4289-997e-5037afa1e7f6",
      "m1": "ز ترکان گریزان شده شهریار",
      "m2": "همی پیچد از بند اسفندیار",
      "verse_number": 29
    },
    {
      "id": "922ccebd-ff5d-41b2-b62b-b59011c7a177",
      "m1": "نسوزد دلت بر چنین کارها",
      "m2": "بدین درد و تیمار و آزارها",
      "verse_number": 30
    },
    {
      "id": "2875cac0-427a-4cdc-aa8e-a468ba013d9a",
      "m1": "سخنها جز این نیز بسیار گفت",
      "m2": "که گفتار با درد و غم بود جفت",
      "verse_number": 31
    },
    {
      "id": "d0a3f8b1-b2c7-41a6-832c-c629d3de490b",
      "m1": "غل و بند بر هم شکستم همه",
      "m2": "دوان آمدم نزد شاه رمه",
      "verse_number": 32
    },
    {
      "id": "9370d360-a1a8-4900-bd33-64c026689785",
      "m1": "از ایشان بکشتم فزون از شمار",
      "m2": "ز کردار من شاد شد شهریار",
      "verse_number": 33
    },
    {
      "id": "29364b38-0199-4aa3-bfed-c464ef343d36",
      "m1": "گر از هفتخوان برشمارم سخن",
      "m2": "همانا که هرگز نیاید به بن",
      "verse_number": 34
    },
    {
      "id": "b30e694a-2853-4aa2-a1e6-1e79442ab9ea",
      "m1": "ز تن باز کردم سر ارجاسپ را",
      "m2": "برافراختم نام گشتاسپ را",
      "verse_number": 35
    },
    {
      "id": "2cb47b0f-ae07-47cb-b69f-92b47df93b8f",
      "m1": "زن و کودکانش بدین بارگاه",
      "m2": "بیاوردم آن گنج و تخت و کلاه",
      "verse_number": 36
    },
    {
      "id": "32f68f21-15be-4be3-8ac8-55b176be5b15",
      "m1": "همه نیکویها بکردی به گنج",
      "m2": "مرا مایه خون آمد و درد و رنج",
      "verse_number": 37
    },
    {
      "id": "e1ce6efc-a286-4160-b88a-52c410b7038c",
      "m1": "ز بس بند و سوگند و پیمان تو",
      "m2": "همی نگذرم من ز فرمان تو",
      "verse_number": 38
    },
    {
      "id": "165be83b-c618-410f-a650-2ca1b73fde42",
      "m1": "همی گفتی ار باز بینم ترا",
      "m2": "ز روشن روان برگزینم ترا",
      "verse_number": 39
    },
    {
      "id": "1410b899-146a-4ad6-bd12-29c2096909e9",
      "m1": "سپارم ترا افسر و تخت عاج",
      "m2": "که هستی به مردی سزاوار تاج",
      "verse_number": 40
    },
    {
      "id": "4ddba442-a294-4d37-92ab-e1e11ed31b2b",
      "m1": "مرا از بزرگان بر این شرم خاست",
      "m2": "که گویند گنج و سپاهت کجاست",
      "verse_number": 41
    },
    {
      "id": "4d065559-d80b-4d3f-a1ed-068fc0d93447",
      "m1": "بهانه کنون چیست من بر چیم",
      "m2": "پس از رنج پویان ز بهر کیم",
      "verse_number": 42
    }
  ],
  "poem_info": {
