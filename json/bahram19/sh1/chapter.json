{
  "id": "caa4b88e-908a-405b-96f6-08e49ef52492",
  "title": "پادشاهی بهرام نوزده سال بود",
  "verses": [
    {
      "id": "17060464-965d-45de-b249-b25ae105154c",
      "m1": "چو بهرام در سوک بهرامشاه",
      "m2": "چهل روز ننهاد بر سر کلاه",
      "verse_number": 1
    },
    {
      "id": "464c8412-4390-4eda-86cc-a2b4460c1733",
      "m1": "برفتند گردان بسیار هوش",
      "m2": "پر از درد با ناله و با خروش",
      "verse_number": 2
    },
    {
      "id": "4f3ee823-adc5-438d-a46a-d3e67912a15b",
      "m1": "نشستند با او به سوک و به درد",
      "m2": "دو رخ زرد و لبها شده لاژورد",
      "verse_number": 3
    },
    {
      "id": "d89ec4d4-bc38-4af4-9174-1ed5a190fdc1",
      "m1": "وزان پس بشد موبد پاکرای",
      "m2": "که گیرد مگر شاه بر گاه جای",
      "verse_number": 4
    },
    {
      "id": "ff07305e-ee83-4432-9d1a-e19a81667079",
      "m1": "به یک هفته با او بکوشید سخت",
      "m2": "همی بود تا بر نشست او به تخت",
      "verse_number": 5
    },
    {
      "id": "95c39ee6-a39c-4951-8935-0e62ca89c4ec",
      "m1": "چو بنشست بهرام بر تخت داد",
      "m2": "برسم کیان تاج بر سر نهاد",
      "verse_number": 6
    },
    {
      "id": "bc8addef-6054-4709-92f4-7f3428fd4c56",
      "m1": "نخست آفرین کرد بر کردگار",
      "m2": "فروزندهٔ گردش روزگار",
      "verse_number": 7
    },
    {
      "id": "cc283ac3-0024-45b7-b5a9-6d634fb1fef9",
      "m1": "فزایندهٔ دانش و راستی",
      "m2": "گزایندهٔ کژی و کاستی",
      "verse_number": 8
    },
    {
      "id": "4fb03a7f-34ac-40ba-be16-b6d208773f43",
      "m1": "خداوند کیوان و گردان سپهر",
      "m2": "ز بنده نخواهد به جز داد و مهر",
      "verse_number": 9
    },
    {
      "id": "44d0c7ab-2a06-4942-80f7-4306638070e6",
      "m1": "ازان پس چنین گفت کای بخردان",
      "m2": "جهاندیده و پاکدل موبدان",
      "verse_number": 10
    },
    {
      "id": "5b1ec16c-95ec-44c8-a568-1876994f9212",
      "m1": "شما هرک دارید دانش بزرگ",
      "m2": "مباشید با شهریاران سترگ",
      "verse_number": 11
    },
    {
      "id": "2fc6ed57-f7b3-441b-af05-bfd4528553a7",
      "m1": "به فرهنگ یازد کسی کش خرد",
      "m2": "بود روشن و مردمی پرورد",
      "verse_number": 12
    },
    {
      "id": "3889fa2e-d596-4d2e-a972-ef16cdc081b1",
      "m1": "سر مردمی بردباری بود",
      "m2": "چو تندی کند تن به خواری بود",
      "verse_number": 13
    },
    {
      "id": "fe950c85-6997-41d6-9d39-34e088446313",
      "m1": "هرانکس که گشت ایمن او شاد شد",
      "m2": "غم و رنج با ایمنی باد شد",
      "verse_number": 14
    },
    {
      "id": "b49855c8-5485-44d4-8017-b7768f2a191a",
      "m1": "توانگرتر آن کو دلی راد داشت",
      "m2": "درم گرد کردن به دل باد داشت",
      "verse_number": 15
    },
    {
      "id": "1b69937e-59b5-46a7-b2ed-de5e05f57c87",
      "m1": "اگر نیستت چیز لختی بورز",
      "m2": "که بیچیز کس را ندارند ارز",
      "verse_number": 16
    },
    {
      "id": "7b6db1f7-a59d-4161-a18d-33ff47ed3845",
      "m1": "مروت نیابد کرا چیز نیست",
      "m2": "همان جاه نزد کسش نیز نیست",
      "verse_number": 17
    },
    {
      "id": "414ce695-3f6e-4e67-ab5d-6bf4bc38f72e",
      "m1": "چو خشنود باشی تنآسان شوی",
      "m2": "وگر آز ورزی هراسان شوی",
      "verse_number": 18
    },
    {
      "id": "264e073c-0e71-4977-840e-491892b73e93",
      "m1": "نه کوشیدنی کان برآرد به رنج",
      "m2": "روان را به پیچاند از آز گنج",
      "verse_number": 19
    },
    {
      "id": "a8ae93e7-f6b1-4b1e-a7ae-00a179e8b3dd",
      "m1": "ز کار زمانه میانه گزین",
      "m2": "چو خواهی که یابی بداد آفرین",
      "verse_number": 20
    },
    {
      "id": "ffdc10e9-0e93-4c16-91b0-456a2294fba6",
      "m1": "چو خشنود داری جهان را به داد",
      "m2": "توانگر بمانی و از داد شاد",
      "verse_number": 21
    },
    {
      "id": "83b170d0-409b-487f-8f5b-4661cab70879",
      "m1": "همه ایمنی باید و راستی",
      "m2": "نباید به داد اندرون کاستی",
      "verse_number": 22
    },
    {
      "id": "e66f164f-9b1b-4e57-b95a-432475767040",
      "m1": "چو شادی بکاهی بکاهد روان",
      "m2": "خرد گردد اندر میان ناتوان",
      "verse_number": 23
    },
    {
      "id": "5c41e215-031f-45f8-9f97-7e700d2e952a",
      "m1": "چو شد پادشاهیش بر سال بیست",
      "m2": "یکی کم برو زندگانی گریست",
      "verse_number": 24
    },
    {
      "id": "09c65ff5-ce94-483c-b36d-4a15a6387db5",
      "m1": "شد آن تاجور شاه با خاک جفت",
      "m2": "ز خرم جهان دخمه بودش نهفت",
      "verse_number": 25
    },
    {
      "id": "d673625c-15ca-4ef6-a6b9-ae63fc1341aa",
      "m1": "جهان را چنین است آیین و ساز",
      "m2": "ندارد به مرگ از کسی چنگ باز",
      "verse_number": 26
    },
    {
      "id": "7a14914e-640f-4eb7-88b7-2b5cd1b7dce4",
      "m1": "پسر بود او را یکی شادکام",
      "m2": "که بهرام بهرامیان داشت نام",
      "verse_number": 27
    },
    {
      "id": "e002b5d0-42c5-40e0-a2b9-a62597dc8c9c",
      "m1": "بیامد نشست از بر تخت شاد",
      "m2": "کلاه کیانی به سر بر نهاد",
      "verse_number": 28
    },
    {
      "id": "f160b0d8-2246-411c-85ad-5c7919caeec1",
      "m1": "کنون کار بهرام بهرامیان",
      "m2": "بگویم تو بشنو به جان و روان",
      "verse_number": 29
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 29
  }
}