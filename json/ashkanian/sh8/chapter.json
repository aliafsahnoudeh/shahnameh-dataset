{
  "id": "775cf72f-09d6-49f7-8068-f74740d55cd0",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "b3db181c-ba78-4e4a-890e-e6129f1aaa9f",
      "m1": "چنان بد که بیماه روی اردوان",
      "m2": "نبودی شب و روز روشنروان",
      "verse_number": 1
    },
    {
      "id": "2a27ec6d-13c1-47a8-8da9-5f1f493e9fb7",
      "m1": "ز دیبا نبرداشتی دوش و یال",
      "m2": "مگر چهر گلنار دیدی به فال",
      "verse_number": 2
    },
    {
      "id": "6db4cd16-cf10-4331-97f2-9f587b0c497f",
      "m1": "چو آمدش هنگام برخاستن",
      "m2": "به دیبا سر گاهش آراستن",
      "verse_number": 3
    },
    {
      "id": "f9465d44-2c80-45f6-bff0-f1d66e8ee29f",
      "m1": "کنیزک نیامد به بالین اوی",
      "m2": "برآشفت و پیچان شد از کین اوی",
      "verse_number": 4
    },
    {
      "id": "1d0dcc56-024f-404f-8070-122f42dd825f",
      "m1": "بدربر سپاه ایستاده به پای",
      "m2": "بیاراسته تخت و تاج و سرای",
      "verse_number": 5
    },
    {
      "id": "808fe83a-2dec-4d3d-9e8f-058077e9672c",
      "m1": "ز درگاه برخاست سالار بار",
      "m2": "بیامد بر نامور شهریار",
      "verse_number": 6
    },
    {
      "id": "1e76dc85-630c-44d1-960c-87e3756b22da",
      "m1": "بدو گفت گردنکشان بر درند",
      "m2": "هر آنکس کجا مهتر کشورند",
      "verse_number": 7
    },
    {
      "id": "dffa8aef-a496-49ce-a52c-17986172dbb0",
      "m1": "پرستندگان را چنین گفت شاه",
      "m2": "که گلنار چون راه و آیین نگاه",
      "verse_number": 8
    },
    {
      "id": "b7dd56ac-6df6-464d-a180-9ffc75270188",
      "m1": "ندارد نیاید به بالین من",
      "m2": "که داند بدین داستان دین من",
      "verse_number": 9
    },
    {
      "id": "bd56845f-0955-4426-8b40-6212710f9566",
      "m1": "بیامد همانگاه مهتر دبیر",
      "m2": "که رفتست بیگاه دوش اردشیر",
      "verse_number": 10
    },
    {
      "id": "16674a4d-f233-4ac4-a801-d3a283b087b2",
      "m1": "وز آخور ببردست خنگ و سیاه",
      "m2": "که بد بارهٔ نامبردار شاه",
      "verse_number": 11
    },
    {
      "id": "5466abe0-924d-4ece-abfc-3bd56a383f52",
      "m1": "همانگاه شد شاه را دلپذیر",
      "m2": "که گنجور او رفت با اردشیر",
      "verse_number": 12
    },
    {
      "id": "e723193a-5fa2-4332-9dff-b479cf31463e",
      "m1": "دل مرد جنگی برآمد ز جای",
      "m2": "برآشفت و زود اندر آمد به پای",
      "verse_number": 13
    },
    {
      "id": "07800f88-323b-4cfd-a6aa-55a2ffed1b5d",
      "m1": "سواران جنگی فراوان ببرد",
      "m2": "تو گفتی همی باره آتش سپرد",
      "verse_number": 14
    },
    {
      "id": "e4976291-62af-42a9-a334-56788854ed8c",
      "m1": "برهبر یکی نامور دید جای",
      "m2": "بسی اندرو مردم و چارپای",
      "verse_number": 15
    },
    {
      "id": "30d9c642-66b5-44b0-be46-bf829e0c8dd8",
      "m1": "بپرسید زیشان که شبگیر هور",
      "m2": "شنیدی شما بانگ نعل ستور",
      "verse_number": 16
    },
    {
      "id": "23ea3cbd-1d83-4816-b6d6-2cdfa5952a42",
      "m1": "یکی گفت زیشان که اندر گذشت",
      "m2": "دو تن بر دو باره درآمد به دشت",
      "verse_number": 17
    },
    {
      "id": "d11aeddf-af62-4717-8868-7080a978fad7",
      "m1": "همی برگذشتند پویان به راه",
      "m2": "یکی بارهٔ خنگ و دیگر سیاه",
      "verse_number": 18
    },
    {
      "id": "95fbdccb-151d-4ae0-8d64-704dee61d7e4",
      "m1": "به دم سواران یکی غرم پاک",
      "m2": "چو اسپی همی بر پراگند خاک",
      "verse_number": 19
    },
    {
      "id": "d3e46f41-7eba-453e-8cfc-3583d5f22b76",
      "m1": "به دستور گفت آن زمان اردوان",
      "m2": "که این غرم باری چرا شد دوان",
      "verse_number": 20
    },
    {
      "id": "3939bdc3-0465-43de-8c7c-b034605703d5",
      "m1": "چنین داد پاسخ که آن فر اوست",
      "m2": "به شاهی و نیکاختری پر اوست",
      "verse_number": 21
    },
    {
      "id": "25d4749f-30ce-42f9-bf6c-2b345c2cd4c1",
      "m1": "گر این غرم دریابد او را متاز",
      "m2": "که این کار گردد بمابر دراز",
      "verse_number": 22
    },
    {
      "id": "cd4d47a7-c136-42b8-b8a9-79a4283a0357",
      "m1": "فرود آمد آن جایگه اردوان",
      "m2": "بخورد و برآسود و آمد دوان",
      "verse_number": 23
    },
    {
      "id": "62f90d95-819f-4d37-9e12-3a250360604e",
      "m1": "همی تاختند از پس اردشیر",
      "m2": "به پیش اندرون اردوان و وزیر",
      "verse_number": 24
    },
    {
      "id": "f4a34342-6d6e-40f5-8c78-0c06e9ece3fb",
      "m1": "جوان با کنیزک چو باد دمان",
      "m2": "نپردخت از تاختن یک زمان",
      "verse_number": 25
    },
    {
      "id": "f67e8d54-7923-499c-98db-11906520fca9",
      "m1": "کرا یار باشد سپهر بلند",
      "m2": "بروبر ز دشمن نیاید گزند",
      "verse_number": 26
    },
    {
      "id": "117c580a-e602-4595-9812-4adb53eefc15",
      "m1": "ازان تاختن رنجه شد اردشیر",
      "m2": "بدید از بلندی یکی آبگیر",
      "verse_number": 27
    },
    {
      "id": "a81ee884-1a5d-4f0f-b3e2-3b4d4ac1253f",
      "m1": "جوانمرد پویان به گلنار گفت",
      "m2": "که اکنون که با رنج گشتیم جفت",
      "verse_number": 28
    },
    {
      "id": "958c45a1-c5c7-432e-ac60-5e10fff39a0a",
      "m1": "بباید بدین چشمه آمد فرود",
      "m2": "که شد باره و مرد بیتار و پود",
      "verse_number": 29
    },
    {
      "id": "bc9d21eb-2115-4fc8-a0d3-f5ea1541535d",
      "m1": "بباشیم بر آب و چیزی خوریم",
      "m2": "ازان پس بر آسودگی بگذریم",
      "verse_number": 30
    },
    {
      "id": "0840f312-0481-43f2-a81a-4f94c63ed97f",
      "m1": "چو هر دو رسیدند نزدیک آب",
      "m2": "به زردی دو رخساره چون آفتاب",
      "verse_number": 31
    },
    {
      "id": "20ae8896-e0f6-491f-bf6b-6b94ab50bd20",
      "m1": "همی خواست کاید فرود اردشیر",
      "m2": "دو مرد جوان دید بر آبگیر",
      "verse_number": 32
    },
    {
      "id": "c1199f12-7a2a-43e5-85c1-0e98f4f08d5c",
      "m1": "جوانان به آواز گفتند زود",
      "m2": "عنان و رکیبت بباید بسود",
      "verse_number": 33
    },
    {
      "id": "e00208ec-1e82-434e-90a6-a71745d83f09",
      "m1": "که رستی ز کام و دم اژدها",
      "m2": "کنون آب خوردن نیارد بها",
      "verse_number": 34
    },
    {
      "id": "ad32d259-4c0d-49f4-97df-45efe45d4e7f",
      "m1": "نباید که آیی به خوردن فرود",
      "m2": "تن خویش را داد باید درود",
      "verse_number": 35
    },
    {
      "id": "c307af41-164c-449a-9b22-a07de91a8da7",
      "m1": "چو از پندگوی آن شنید اردشیر",
      "m2": "به گلنار گفت این سخن یادگیر",
      "verse_number": 36
    },
    {
      "id": "ec64c6da-d93d-4785-9688-8c102473e2d5",
      "m1": "رکیبش گران شد سبک شد عنان",
      "m2": "به گردن برآورد رخشان سنان",
      "verse_number": 37
    },
    {
      "id": "90030c06-724c-408e-bf57-ca2aadf74b8f",
      "m1": "پساندر چو باد دمان اردوان",
      "m2": "همی تاخت با رنج و تیرهروان",
      "verse_number": 38
    },
    {
      "id": "9aa92254-a0fa-4deb-a9db-f84584e76e62",
      "m1": "بدانگه که بگذشت نیمی ز روز",
      "m2": "فلک را بپیمود گیتی فروز",
      "verse_number": 39
    },
    {
      "id": "6b85ba94-7cc8-4754-ba90-0f43dc01838a",
      "m1": "یکی شارستان دید با رنگ و بوی",
      "m2": "بسی مردم آمد به نزدیک اوی",
      "verse_number": 40
    },
    {
      "id": "601ab98e-d99f-4c84-bbcc-ebcff5c6091a",
      "m1": "چنین گفت با موبدان نامدار",
      "m2": "که کی برگذشت آن دلاور سوار",
      "verse_number": 41
    },
    {
      "id": "d87b9102-578c-4e4e-b404-aea97c3d6b55",
      "m1": "چنین داد پاسخ بدو رهنمای",
      "m2": "که ای شاه نیکاختر و پاکرای",
      "verse_number": 42
    },
    {
      "id": "2ce52337-a5d8-43f6-a25e-549f95a4465c",
      "m1": "بدانگه که خورشید برگشت زرد",
      "m2": "بگسترد شب چادر لاژورد",
      "verse_number": 43
    },
    {
      "id": "b8549f21-51e5-4002-8a4d-2a7bbb816c59",
      "m1": "بدین شهر بگذشت پویان دو تن",
      "m2": "پر از گرد وبیآب گشته دهن",
      "verse_number": 44
    },
    {
      "id": "edfe0f1f-caa9-4a76-bdb9-592856fec2cf",
      "m1": "یکی غرم بود از پس یک سوار",
      "m2": "که چون او ندیدم به ایوان نگار",
      "verse_number": 45
    },
    {
      "id": "29788a8f-848d-4aec-b998-f992ad454477",
      "m1": "چنین گفت با اردوان کدخدای",
      "m2": "کز ایدر مگر بازگردی به جای",
      "verse_number": 46
    },
    {
      "id": "ebaa8683-e5ae-4172-8f5f-198acb28fd25",
      "m1": "سپه سازی و ساز جنگ آوری",
      "m2": "که اکنون دگرگونه شد داوری",
      "verse_number": 47
    },
    {
      "id": "ca077948-6763-49e7-b8cd-1452927caed2",
      "m1": "که بختش پس پشت او برنشست",
      "m2": "ازین تاختن باد ماند به دست",
      "verse_number": 48
    },
    {
      "id": "95272909-01c6-4b91-8f52-11cebf11bd91",
      "m1": "یکی نامه بنویس نزد پسر",
      "m2": "به نامه بگوی این سخن در به در",
      "verse_number": 49
    },
    {
      "id": "7175663b-bef3-48fb-a582-cd483a7372c0",
      "m1": "نشانی مگر یابد از اردشیر",
      "m2": "نباید که او دو شد از غرم شیر",
      "verse_number": 50
    },
    {
      "id": "422e5725-9e6d-4937-9268-1b400b3a2917",
      "m1": "چو بشنید زو اردوان این سخن",
      "m2": "بدانست کآواز او شد کهن",
      "verse_number": 51
    },
    {
      "id": "a05d27f1-2289-49ef-8f19-620705303ce1",
      "m1": "بدان شارستان اندر آمد فرود",
      "m2": "همی داد نیکی دهش را درود",
      "verse_number": 52
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 52
  }
}