{
  "id": "f770fc6a-04b4-47a7-b0a9-510d9600551a",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "3d36c7bb-b246-4c51-9752-5c87a040f052",
      "m1": "چو خورشید شد زرد لشکر براند",
      "m2": "کسی را که نابردنی بد بماند",
      "verse_number": 1
    },
    {
      "id": "28abb9f1-036b-4ef0-bb96-ccca10795798",
      "m1": "چو شب نیم بگذشت و تاریک شد",
      "m2": "جهاندار با کرد نزدیک شد",
      "verse_number": 2
    },
    {
      "id": "def65966-a17a-4c94-b3dd-ffa3cd755d5d",
      "m1": "همه دشت زیشان پر از خفته دید",
      "m2": "یکایک دل لشکر آشفته دید",
      "verse_number": 3
    },
    {
      "id": "4818e8ca-7627-4885-82b9-96860aae5076",
      "m1": "چو آمد سپهبد به بالین کرد",
      "m2": "عنان بارهٔ تیزتگ را سپرد",
      "verse_number": 4
    },
    {
      "id": "d4f594a9-6dc6-43fb-a450-99a5398a1b98",
      "m1": "برآهخت شمشیر و اندرنهاد",
      "m2": "گیا را ز خون بر سر افسر نهاد",
      "verse_number": 5
    },
    {
      "id": "ece0885c-beba-459b-ae98-868e6d5412ea",
      "m1": "همه دشت زیشان سر و دست شد",
      "m2": "ز انبوه کشته زمین گست شد",
      "verse_number": 6
    },
    {
      "id": "5f7625e7-7625-4367-94f1-f16ae811d198",
      "m1": "بیاندازه زیشان گرفتار شد",
      "m2": "سترگی و نابخردی خوار شد",
      "verse_number": 7
    },
    {
      "id": "5088ea50-6a88-4eeb-9b9a-5855be0c6038",
      "m1": "همه بومهاشان به تاراج داد",
      "m2": "سپه را همه بدره و تاج داد",
      "verse_number": 8
    },
    {
      "id": "849e96f1-5185-4450-bd53-334d5e0a2050",
      "m1": "چنان شد که دینار بر سر به تشت",
      "m2": "اگر پیر مردی ببردی به دشت",
      "verse_number": 9
    },
    {
      "id": "ab5c694c-2b93-447c-8b8e-5d21a1c2cb80",
      "m1": "به دینار او کس نکردی نگاه",
      "m2": "ز نیکاختر و بخت وز داد شاه",
      "verse_number": 10
    },
    {
      "id": "f29af211-a5af-4528-97da-7c12aa112792",
      "m1": "ز مردی نکردی بدان جنگ فخر",
      "m2": "گرازان بیامد به شهر صطخر",
      "verse_number": 11
    },
    {
      "id": "9e20603f-6a5b-4009-bedd-aab7f37c5429",
      "m1": "بفرمود کاسپان به نیرو کنید",
      "m2": "سلیح سواران بیآهو کنید",
      "verse_number": 12
    },
    {
      "id": "852a50ee-8672-4368-baa2-ad2f7abb9341",
      "m1": "چو آسوده گردید یکسر به بزم",
      "m2": "که زود آید اندیشهٔ روز رزم",
      "verse_number": 13
    },
    {
      "id": "79f55fd6-e29f-4d2d-b4bc-1ce515c2fb56",
      "m1": "دلیران به خوردن نهادند سر",
      "m2": "چو آسوده شد کردگاه و کمر",
      "verse_number": 14
    },
    {
      "id": "b4eba8ab-d73d-46b3-901e-99fee91f914b",
      "m1": "پراندیشهٔ رزم شد اردشیر",
      "m2": "چو این داستان بشنوی یادگیر",
      "verse_number": 15
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 15
  }
}