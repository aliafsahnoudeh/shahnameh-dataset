{
  "id": "33e765b0-3f54-43bd-9764-f2a19f72f935",
  "title": "بخش ۱۹",
  "verses": [
    {
      "id": "3b9bacc6-f8ae-4639-a3a2-c24fa51d9edf",
      "m1": "پراندیشه بود آن شب از کرم شاه",
      "m2": "چو بنشست خورشید بر جایگاه",
      "verse_number": 1
    },
    {
      "id": "5af1727b-eaf3-4d02-9ae5-4f3f07466fa4",
      "m1": "سپه برگرفت از لب آبگیر",
      "m2": "سوی پارس آمد دمان اردشیر",
      "verse_number": 2
    },
    {
      "id": "f7cc9655-4786-4d8b-9759-5da84dc402da",
      "m1": "پس لشکر او بیامد سپاه",
      "m2": "ز هر سو گرفتند بر شاه راه",
      "verse_number": 3
    },
    {
      "id": "ab2fb002-568e-436a-9427-bc20779ebc63",
      "m1": "بکشتند هرکس که بد نامدار",
      "m2": "همی تاختند از پس شهریار",
      "verse_number": 4
    },
    {
      "id": "24abe682-9ada-4c80-8386-1a459107cf99",
      "m1": "خروش آمد از پس که ای بخت کرم",
      "m2": "که رخشنده بادا سر از تخت کرم",
      "verse_number": 5
    },
    {
      "id": "b3da2d02-409e-47e9-9cf1-cc388d4cf556",
      "m1": "همی هرکسی گفت کاینت شگفت",
      "m2": "کزین هرکس اندازه باید گرفت",
      "verse_number": 6
    },
    {
      "id": "8a16a277-a5a3-454b-82f8-6e71a63ecee9",
      "m1": "بیامد گریزان و دل پر نهیب",
      "m2": "همی تاخت اندر فراز و نشیب",
      "verse_number": 7
    },
    {
      "id": "fd27300c-4581-4607-b168-bb471e94f55f",
      "m1": "یکی شارستان دید جایی بزرگ",
      "m2": "ازان سو براندند گردان چو گرگ",
      "verse_number": 8
    },
    {
      "id": "22569d91-0181-4ab1-ada6-75f22f36b8b7",
      "m1": "چو تنگ اندر آمد یکی خانه دید",
      "m2": "به در بر دو برنای بیگانه دید",
      "verse_number": 9
    },
    {
      "id": "153edb34-4820-4e2a-a7ba-bb98fb1f5fe5",
      "m1": "ببودند بر در زمانی به پای",
      "m2": "بپرسید زو این دو پاکیزهرای",
      "verse_number": 10
    },
    {
      "id": "8253a316-5d07-417d-97fb-679ec8d13ad2",
      "m1": "که بیگه چنین از کجا رفتهاید",
      "m2": "که با گرد راهید و آشفتهاید",
      "verse_number": 11
    },
    {
      "id": "1c609a8c-2f0e-4c8e-bb18-0e60ec71a0f2",
      "m1": "بدو گفت زین سو گذشت اردشیر",
      "m2": "ازو باز ماندیم بر خیره خیر",
      "verse_number": 12
    },
    {
      "id": "f74841dd-f140-42e3-8018-53012a584a8b",
      "m1": "که بگریخت از کرم وز هفتواد",
      "m2": "وزان بیهنر لشکر بدنژاد",
      "verse_number": 13
    },
    {
      "id": "771faeaf-8269-4d32-8b24-419daad0ac93",
      "m1": "بجستند از جای هر دو جوان",
      "m2": "پر از درد گشتند و تیرهروان",
      "verse_number": 14
    },
    {
      "id": "62ff1bec-1fc5-47ef-920e-11c2bd841631",
      "m1": "فرود آوریدندش از پشت زین",
      "m2": "بران مهتران خواندند آفرین",
      "verse_number": 15
    },
    {
      "id": "8b35af50-a88b-4850-b422-3a6d174e8609",
      "m1": "یکی جای خرم بپیراستند",
      "m2": "پسندیده خوانی بیاراستند",
      "verse_number": 16
    },
    {
      "id": "3932b7d9-0107-497d-b66e-aac5d9cc7ae4",
      "m1": "نشستند با شاه گردان به خوان",
      "m2": "پرستش گرفتند هر دو جوان",
      "verse_number": 17
    },
    {
      "id": "fa6cf485-6c94-43dd-aa9b-e50445db96f3",
      "m1": "به آواز گفتند کای سرفراز",
      "m2": "غم و شادمانی نماند دراز",
      "verse_number": 18
    },
    {
      "id": "1b5d2923-26df-416d-ab66-d2d21b603a31",
      "m1": "نگه کن که ضحاک بیدادگر",
      "m2": "چه آورد زان تخت شاهی به سر",
      "verse_number": 19
    },
    {
      "id": "c4579328-bba1-4dae-b9ca-01f064f90635",
      "m1": "هم افراسیاب آن بداندیش مرد",
      "m2": "کزو بد دل شهریاران به درد",
      "verse_number": 20
    },
    {
      "id": "9346ab0c-80fb-45c7-936c-66d823643ad3",
      "m1": "سکندر که آمد برین روزگار",
      "m2": "بکشت آنک بد در جهان شهریار",
      "verse_number": 21
    },
    {
      "id": "3ddc8883-3993-4c20-ac8c-0499a9fa26fb",
      "m1": "برفتند و زیشان به جز نام زشت",
      "m2": "نماند و نیابند خرم بهشت",
      "verse_number": 22
    },
    {
      "id": "bdca625b-2729-4e9a-8f02-015d7ac6a161",
      "m1": "نماند همین نیز بر هفتواد",
      "m2": "بپیچد به فرجام این بدنژاد",
      "verse_number": 23
    },
    {
      "id": "82ba5e92-5f08-49e0-b6ad-2fd287c0ee7c",
      "m1": "ز گفتار ایشان دل شهریار",
      "m2": "چنان تازه شد چون گل اندر بهار",
      "verse_number": 24
    },
    {
      "id": "74e13aa5-8906-4d7f-b28f-1c9d03b32a9f",
      "m1": "خوش آمدش گفتار آن دلنواز",
      "m2": "بکرد آشکارا و بنمود راز",
      "verse_number": 25
    },
    {
      "id": "9acd085b-7534-487d-b3ee-d37af587caba",
      "m1": "که فرزند ساسان منم اردشیر",
      "m2": "یکی پند باید مرا دلپذیر",
      "verse_number": 26
    },
    {
      "id": "a4daaca9-35d3-48c3-a65a-e6e5f20c2f19",
      "m1": "چه سازیم با کرم و با هفتواد",
      "m2": "که نام و نژادش به گیتی مباد",
      "verse_number": 27
    },
    {
      "id": "059c7ee4-4c5a-4e7b-97fb-fcaa21e5d85c",
      "m1": "سپهبدار ایران چو بگشاد راز",
      "m2": "جوانانش بردند هر دو نماز",
      "verse_number": 28
    },
    {
      "id": "da942d9d-bb0f-4388-9126-927bc2974663",
      "m1": "بگفتند هر دو که نوشه بدی",
      "m2": "همیشه ز تو دور دست بدی",
      "verse_number": 29
    },
    {
      "id": "0e6147c8-8662-4baf-a762-7bee609a3c89",
      "m1": "تن و جان ما پیش تو بنده باد",
      "m2": "همیشه روان تو پاینده باد",
      "verse_number": 30
    },
    {
      "id": "51a2af5b-cf7a-4747-bf9d-fbce54100664",
      "m1": "سخنها که پرسیدی از ما درست",
      "m2": "بگوییم تا چاره سازی نخست",
      "verse_number": 31
    },
    {
      "id": "360db985-a6a1-467a-bdec-58c16d650a50",
      "m1": "تو در جنگ با کرم و با هفتواد",
      "m2": "بسنده نهای گر نپیچی ز داد",
      "verse_number": 32
    },
    {
      "id": "2d81cfb8-88f7-41cd-a0be-ab5050f02cf5",
      "m1": "یکی جای دارند بر تیغ کوه",
      "m2": "بدو اندرون کرم و گنج و گروه",
      "verse_number": 33
    },
    {
      "id": "9026c904-6d99-4e30-9fec-de62778ac2a9",
      "m1": "به پیش اندرون شهر و دریا بپشت",
      "m2": "دژی بر سر کوه و راهی درشت",
      "verse_number": 34
    },
    {
      "id": "d1434f1c-ba91-4951-8741-d69850c98331",
      "m1": "همان کرم کز مغز آهرمنست",
      "m2": "جهان آفریننده را دشمنست",
      "verse_number": 35
    },
    {
      "id": "56d61874-79b9-4f16-8dd2-cf05e49c3bed",
      "m1": "همی کرم خوانی به چرم اندرون",
      "m2": "یکی دیو جنگیست ریزنده خون",
      "verse_number": 36
    },
    {
      "id": "529aa328-0eb1-412a-84e7-e41d0d8a6fba",
      "m1": "سخنها چو بشنید زو اردشیر",
      "m2": "همه مهر جوینده و دلپذیر",
      "verse_number": 37
    },
    {
      "id": "6209c410-d639-4086-b5c2-43b3c62d871c",
      "m1": "بدیشان چنین گفت کآری رواست",
      "m2": "بد و نیک ایشان مرا با شماست",
      "verse_number": 38
    },
    {
      "id": "f6fcc18d-9acb-4b95-a4e4-7d9f686d0314",
      "m1": "جوانان ورا پاسخ آراستند",
      "m2": "دل هوشمندش بپیراستند",
      "verse_number": 39
    },
    {
      "id": "8418e555-0c95-4f50-9bfa-01ecc8c094e0",
      "m1": "که ما بندگانیم پیشت به پای",
      "m2": "همیشه به نیکی ترا رهنمای",
      "verse_number": 40
    },
    {
      "id": "43da101b-ad00-4b92-b2bf-7b823a0f5f97",
      "m1": "ز گفتار ایشان دلش گشت شاد",
      "m2": "همی رفت پیروز و دل پر ز داد",
      "verse_number": 41
    },
    {
      "id": "0c440739-8264-4344-817d-a08923329f5f",
      "m1": "چو برداشت زانجا جهاندار شاه",
      "m2": "جوانان برفتند با او به راه",
      "verse_number": 42
    },
    {
      "id": "bbf1f9ac-41a8-4d22-b874-eb1712ac3ce9",
      "m1": "همی رفت روشندل و یادگیر",
      "m2": "سرافراز تا خورهٔ اردشیر",
      "verse_number": 43
    },
    {
      "id": "1bfa1350-da03-49b8-b1f5-73bd7109e47c",
      "m1": "چو بر شاه بر شد سپاه انجمن",
      "m2": "بزرگان فرزانه و رایزن",
      "verse_number": 44
    },
    {
      "id": "21854fc3-5890-4599-b92e-a083838f29f0",
      "m1": "برآسود یک چند و روزی به داد",
      "m2": "بیامد سوی مهرک نوشزاد",
      "verse_number": 45
    },
    {
      "id": "65963fcb-15e0-479a-a94c-bce5c3360da1",
      "m1": "چو مهرک بیارست رفتن به جنگ",
      "m2": "جهان کرد بر خویشتن تار و تنگ",
      "verse_number": 46
    },
    {
      "id": "dba33698-f454-48a4-8b5e-d696e471a028",
      "m1": "به جهرم چو نزدیک شد پادشا",
      "m2": "نهان گشت زو مهرک بیوفا",
      "verse_number": 47
    },
    {
      "id": "da6d4797-d1f9-4113-94d8-b228b7911e31",
      "m1": "دل پادشا پر ز پیکار شد",
      "m2": "همی بود تا او گرفتار شد",
      "verse_number": 48
    },
    {
      "id": "5421cd87-b3a0-43fa-bc1e-67f57d25d088",
      "m1": "به شمشیر هندی بزد گردنش",
      "m2": "به آتش در انداخت بیسر تنش",
      "verse_number": 49
    },
    {
      "id": "9dd34bda-be4a-4199-a244-090a56162d41",
      "m1": "هرانکس کزان تخمه آمد به مشت",
      "m2": "به خنجر هم اندر زمانش بکشت",
      "verse_number": 50
    },
    {
      "id": "f75fbfaf-3bf4-4d74-b2b2-0a2d780a604d",
      "m1": "مگر دختری کان نهان گشت زوی",
      "m2": "همه شهر ازو گشت پر جست و جوی",
      "verse_number": 51
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 51
  }
}