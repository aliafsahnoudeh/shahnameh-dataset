{
  "id": "48924564-06ed-41ea-8611-61cc5abba0c2",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "04da854d-7481-454b-96c1-d585e81fa299",
      "m1": "چو نه ماه بگذشت بر ماهچهر",
      "m2": "یکی کودک آمد چو تابنده مهر",
      "verse_number": 1
    },
    {
      "id": "1775fe01-972f-4e14-8308-58c0171ddfa2",
      "m1": "به مانندهٔ نامدار اردشیر",
      "m2": "فزاینده و فرخ و دلپذیر",
      "verse_number": 2
    },
    {
      "id": "15271230-d752-422e-bd31-dacbdd4dfc01",
      "m1": "همان اردشیرش پدر کرد نام",
      "m2": "نیا شد به دیدار او شادکام",
      "verse_number": 3
    },
    {
      "id": "51544876-c265-4295-be61-6b9bef50badc",
      "m1": "همی پروریدش به بربر به ناز",
      "m2": "برآمد برین روزگاری دراز",
      "verse_number": 4
    },
    {
      "id": "a1eb546a-e826-4071-9d7e-c8d27447f0a3",
      "m1": "مر او را کنون مردم تیزویر",
      "m2": "همی خواندش بابکان اردشیر",
      "verse_number": 5
    },
    {
      "id": "99f22073-4d35-4414-87db-3411da961077",
      "m1": "بیاموختندش هنر هرچ بود",
      "m2": "هنر نیز بر گوهرش بر فزود",
      "verse_number": 6
    },
    {
      "id": "71d48970-9276-48dc-8e94-c61a17aefca3",
      "m1": "چنان شد به دیدار و فرهنگ و چهر",
      "m2": "که گفتی همی زو فروزد سپهر",
      "verse_number": 7
    },
    {
      "id": "e379eec8-5953-4e3f-90b5-2c651a6c1f2a",
      "m1": "پس آگاهی آمد سوی اردوان",
      "m2": "ز فرهنگ وز دانش آن جوان",
      "verse_number": 8
    },
    {
      "id": "a2a568e2-7884-4f5b-ba80-dbcdc5807d3d",
      "m1": "که شیر ژیانست هنگام رزم",
      "m2": "به ناهید ماند همی روز بزم",
      "verse_number": 9
    },
    {
      "id": "7b35d914-22d4-4684-b9b4-5de4341e5517",
      "m1": "یکی نامه بنوشت پس اردوان",
      "m2": "سوی بابک نامور پهلوان",
      "verse_number": 10
    },
    {
      "id": "dd519f12-244f-47dd-94a4-0e8033c3559a",
      "m1": "که ای مرد بادانش و رهنمای",
      "m2": "سخنگوی و با نام و پاکیزهرای",
      "verse_number": 11
    },
    {
      "id": "250d261e-3318-4d35-9ca3-fd727fc211c0",
      "m1": "شنیدم که فرزند تو اردشیر",
      "m2": "سواریست گوینده و یادگیر",
      "verse_number": 12
    },
    {
      "id": "ca55fcaf-b92b-4531-b920-0c3dfdac8767",
      "m1": "چو نامه بخوانی هماندر زمان",
      "m2": "فرستش به نزدیک ما شادمان",
      "verse_number": 13
    },
    {
      "id": "ff86d525-ac6a-48f8-8131-974fd592544e",
      "m1": "ز بایستهها بینیازش کنم",
      "m2": "میان یلان سرفرازش کنم",
      "verse_number": 14
    },
    {
      "id": "d823b399-84fa-4f35-b733-ae6162ea6a14",
      "m1": "چو باشد به نزدیک فرزند ما",
      "m2": "نگوییم کو نیست پیوند ما",
      "verse_number": 15
    },
    {
      "id": "98f2860d-ad3e-4c47-b6e4-ccc2994b10cb",
      "m1": "چو آن نامهٔ شاه بابک بخواند",
      "m2": "بسی خون مژگان به رخ برفشاند",
      "verse_number": 16
    },
    {
      "id": "ec89c202-029c-4a83-8f47-834e7f2e68c5",
      "m1": "بفرمود تا پیش او شد دبیر",
      "m2": "همان نورسیده جوان اردشیر",
      "verse_number": 17
    },
    {
      "id": "92a77673-e61d-413b-9a84-fa30351ebe7e",
      "m1": "بدو گفت کاین نامهٔ اردوان",
      "m2": "بخوان و نگهکن به روشن روان",
      "verse_number": 18
    },
    {
      "id": "947ef1ce-d970-4f40-97ae-27274e32e5b6",
      "m1": "من اینک یکی نامه نزدیک شاه",
      "m2": "نویسم فرستم یکی نیکخواه",
      "verse_number": 19
    },
    {
      "id": "6013bb02-9522-4179-bca4-f346cf8ed154",
      "m1": "بگویم که اینک دل و دیده را",
      "m2": "دلاور جوان پسندیده را",
      "verse_number": 20
    },
    {
      "id": "f31ebce2-c14c-4c3b-a707-2a3aac85e803",
      "m1": "فرستادم و دادمش نیز پند",
      "m2": "چو آید بدان بارگاه بلند",
      "verse_number": 21
    },
    {
      "id": "2f1de36b-45a0-484f-a282-637861a069b9",
      "m1": "تو آن کن که از رسم شاهان سزد",
      "m2": "نباید که بادی برو بر وزد",
      "verse_number": 22
    },
    {
      "id": "3e059410-e6c0-4b77-8f56-17077c53877d",
      "m1": "در گنج بگشاد بابک چو باد",
      "m2": "جوان را ز هرگونهای کرد شاد",
      "verse_number": 23
    },
    {
      "id": "b4b2280a-ac5b-4761-9450-c06e02a7e07f",
      "m1": "ز زرین ستام و ز گوپال و تیغ",
      "m2": "ز فرزند چیزش نیامد دریغ",
      "verse_number": 24
    },
    {
      "id": "a709c18f-cd6e-49fa-b2dc-96900f65360e",
      "m1": "ز دینار و دیبا و اسپ و رهی",
      "m2": "ز چینی و زربفت شاهنشهی",
      "verse_number": 25
    },
    {
      "id": "75c5975c-50ad-4f36-b385-18160db5410f",
      "m1": "بیاورد و بنهاد پیش جوان",
      "m2": "جوان شد پرستندهٔ اردوان",
      "verse_number": 26
    },
    {
      "id": "aead9f03-1562-4c19-a6dc-ba6130061419",
      "m1": "بسی هدیهها نیز با اردشیر",
      "m2": "ز دیبا و دینار و مشک و عبیر",
      "verse_number": 27
    },
    {
      "id": "9988c68c-bf30-42dc-b66b-3581516f4bca",
      "m1": "ز پیش نیا کودک نیک پی",
      "m2": "به درگاه شاه اردوان شد بری",
      "verse_number": 28
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 28
  }
}