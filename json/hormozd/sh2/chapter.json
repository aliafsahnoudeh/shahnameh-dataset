{
  "id": "4c9057fb-6f54-4aea-935b-c36fec259e6d",
  "title": "بخش ۲ - آغاز داستان",
  "verses": [
    {
      "id": "a9533775-8576-4c8b-8b10-a532b71667e6",
      "m1": "یکی پیر بد مرزبان هری",
      "m2": "پسندیده و دیده ازهر دری",
      "verse_number": 1
    },
    {
      "id": "aff705c2-0fec-4855-9a24-00d71bb1c3f0",
      "m1": "جهاندیدهای نام او بود ماخ",
      "m2": "سخندان و با فر و با یال و شاخ",
      "verse_number": 2
    },
    {
      "id": "7c3fb2a2-c951-40ea-9084-e5063e66e011",
      "m1": "بپرسیدمش تا چه داری بیاد",
      "m2": "ز هرمز که بنشست بر تخت داد",
      "verse_number": 3
    },
    {
      "id": "ced98d13-f2c0-4846-a1fb-5e6f4689861d",
      "m1": "چنین گفت پیرخراسان که شاه",
      "m2": "چو بنشست بر نامور پیشگاه",
      "verse_number": 4
    },
    {
      "id": "961c9312-7086-4d42-a46a-d378f4506d88",
      "m1": "نخست آفرین کرد بر کردگار",
      "m2": "توانا و داننده روزگار",
      "verse_number": 5
    },
    {
      "id": "635fb485-cb42-4c34-9030-1ebe0ced4c0f",
      "m1": "دگر گفت ما تخت نامی کنیم",
      "m2": "گرانمایگان را گرامی کنیم",
      "verse_number": 6
    },
    {
      "id": "e7e63b10-bb1b-443b-b63d-f63ffbd6d2c1",
      "m1": "جهان را بداریم در زیر پر",
      "m2": "چنان چون پدر داشت با داد و فر",
      "verse_number": 7
    },
    {
      "id": "616be2b4-d0b1-4038-94c5-14d6d3a4df12",
      "m1": "گنه کردگانرا هراسان کنیم",
      "m2": "ستم دیدگان را تن آسان کنیم",
      "verse_number": 8
    },
    {
      "id": "e0cdf06d-a9a6-4cc0-84b9-60cd25dd8a85",
      "m1": "ستون بزرگیست آهستگی",
      "m2": "همان بخشش و داد و شایستگی",
      "verse_number": 9
    },
    {
      "id": "1a1d91ea-4cb1-4488-9047-6f7b3363e513",
      "m1": "بدانید کز کردگار جهان",
      "m2": "بد و نیک هرگز نماند نهان",
      "verse_number": 10
    },
    {
      "id": "7dba2e32-2b7c-4a6b-a1e1-6f67f5fc30c7",
      "m1": "نیاگان ما تاجداران دهر",
      "m2": "که از دادشان آفرین بود بهر",
      "verse_number": 11
    },
    {
      "id": "93f9de92-0252-4079-8cdd-96966394a1ad",
      "m1": "نجستند جز داد و بایستگی",
      "m2": "بزرگی و گردی و شایستگی",
      "verse_number": 12
    },
    {
      "id": "05d00347-0506-4cf6-a1ac-56ad24f7a6ad",
      "m1": "ز کهتر پرستش ز مهتر نواز",
      "m2": "بداندیش را داشتن در گداز",
      "verse_number": 13
    },
    {
      "id": "94af5766-ea4e-40d2-b3e0-a350db0f24e4",
      "m1": "بهرکشوری دست و فرمان مراست",
      "m2": "توانایی و داد و پیمان مراست",
      "verse_number": 14
    },
    {
      "id": "8cb26137-73fb-4c38-938d-a635a6d99ed4",
      "m1": "کسی را که یزدان کند پادشا",
      "m2": "بنازد بدو مردم پارسا",
      "verse_number": 15
    },
    {
      "id": "5266a1ed-867d-4107-9db6-0ce9a7f24260",
      "m1": "که سرمایه شاه بخشایشست",
      "m2": "زمانه ز بخشش به آسایشست",
      "verse_number": 16
    },
    {
      "id": "766497e1-68e0-4578-9c6f-9a808394091c",
      "m1": "به درویش برمهربانی کنیم",
      "m2": "بپرمایه بر پاسبانی کنیم",
      "verse_number": 17
    },
    {
      "id": "9df0ddc0-7a92-4dd0-afde-eba8aab1c8a9",
      "m1": "هرآنکس که ایمن شد از کار خویش",
      "m2": "برما چنان کرد بازار خویش",
      "verse_number": 18
    },
    {
      "id": "b98bf29e-9b12-4d8b-bfe5-9d99c6cc0f9e",
      "m1": "شما را بمن هرچ هست آرزوی",
      "m2": "مدارید راز از دل نیکخوی",
      "verse_number": 19
    },
    {
      "id": "36d1e533-d6b4-48f0-9618-9d1db1886c19",
      "m1": "ز چیزی که دلتان هراسان بود",
      "m2": "مرا داد آن دادن آسان بود",
      "verse_number": 20
    },
    {
      "id": "8e8b5a2d-6845-4d43-9b41-eb4b9eb9a3cb",
      "m1": "هرآنکس که هست از شما نیکبخت",
      "m2": "همه شاد باشید زین تاج وتخت",
      "verse_number": 21
    },
    {
      "id": "5e7f2d8b-a9b1-4ddd-ba37-b59b1c1dc22a",
      "m1": "میان بزرگان درخشش مراست",
      "m2": "چوبخشایش داد و بخشش مراست",
      "verse_number": 22
    },
    {
      "id": "33fd3d8d-6016-455e-93e7-2244ae95979f",
      "m1": "شما مهربانی بافزون کنید",
      "m2": "ز دل کینه و آز بیرون کنید",
      "verse_number": 23
    },
    {
      "id": "5e85080c-5325-468c-a11b-650993429c6d",
      "m1": "هر آنکس که پرهیز کرد از دو کار",
      "m2": "نبیند دو چشمش بد روزگار",
      "verse_number": 24
    },
    {
      "id": "609cdfaa-b8f8-43ba-a745-296650f5bd59",
      "m1": "بخشنودی کردگار جهان",
      "m2": "بکوشید یکسر کهان و مهان",
      "verse_number": 25
    },
    {
      "id": "dc3110be-2e25-4ca6-8ec0-2c8e1e106ea5",
      "m1": "دگر آنک مغزش بود پرخرد",
      "m2": "سوی ناسپاسی دلش ننگرد",
      "verse_number": 26
    },
    {
      "id": "992c385c-b5e5-405f-851e-cf26e60d05f2",
      "m1": "چو نیکی فزایی بروی کسان",
      "m2": "بود مزد آن سوی تو نارسان",
      "verse_number": 27
    },
    {
      "id": "afc152a6-7f0f-4d73-8e68-b85deecf1765",
      "m1": "میامیز با مردم کژ گوی",
      "m2": "که او را نباشد سخن جز بروی",
      "verse_number": 28
    },
    {
      "id": "997dbb88-f7ee-4e4e-8761-afee9dccfd8d",
      "m1": "وگر شهریارت بود دادگر",
      "m2": "تو بر وی بسستی گمانی مبر",
      "verse_number": 29
    },
    {
      "id": "df18488f-79ac-4075-ba8b-e4992e162e38",
      "m1": "گر ای دون که گویی نداند همی",
      "m2": "سخنهای شاهان بخواند همی",
      "verse_number": 30
    },
    {
      "id": "ad0ab5e6-d6ef-459a-9cd0-408bc1789d92",
      "m1": "چو بخشایش از دل کند شهریار",
      "m2": "تو اندر زمین تخم کژی مکار",
      "verse_number": 31
    },
    {
      "id": "401cc666-6c71-42d3-87c4-1abecb33790e",
      "m1": "هرآنکس که او پند ما داشت خوار",
      "m2": "بشوید دل از خوبی روزگار",
      "verse_number": 32
    },
    {
      "id": "e6bd54ee-3c25-4fe3-b528-c8ff2b695d3d",
      "m1": "چوشاه از تو خشنود شد راستیست",
      "m2": "وزو سر بپیچی درکاستیست",
      "verse_number": 33
    },
    {
      "id": "49861338-88d1-4328-98c0-3f8286cecb25",
      "m1": "درشتیش نرمیست در پند تو",
      "m2": "بجوید که شد گرم پیوند تو",
      "verse_number": 34
    },
    {
      "id": "fb7b184e-41f2-4a40-a88e-d2aacab36fb0",
      "m1": "ز نیکی مپرهیز هرگز به رنج",
      "m2": "مکن شادمان دل به بیداد گنج",
      "verse_number": 35
    },
    {
      "id": "65c7c5d6-e7c8-4749-b860-ce48df8c4f24",
      "m1": "چو اندر جهان کام دل یافتی",
      "m2": "رسیدی بجایی که بشتافتی",
      "verse_number": 36
    },
    {
      "id": "aa97a349-73db-40df-a7f6-5852c191abc7",
      "m1": "چو دیهیم هفتاد بر سرنهی",
      "m2": "همه گرد کرده به دشمن دهی",
      "verse_number": 37
    },
    {
      "id": "3c1cd3d8-c68a-4096-94a5-62af902c9cfd",
      "m1": "بهر کار درویش دارد دلم",
      "m2": "نخواهم که اندیشه زو بگسلم",
      "verse_number": 38
    },
    {
      "id": "7ba9908d-67d1-433f-a052-2f57f6a0f997",
      "m1": "همیخواهم از پاک پروردگار",
      "m2": "که چندان مرا بر دهد روزگار",
      "verse_number": 39
    },
    {
      "id": "1ca2b2bc-d9de-4914-98a9-493be6a5766f",
      "m1": "که درویش را شاد دارم به گنج",
      "m2": "نیارم دل پارسا را به رنج",
      "verse_number": 40
    },
    {
      "id": "491df7f8-1d89-40b4-bcf2-d8fdeaf16933",
      "m1": "هرآنکس که شد در جهان شاه فش",
      "m2": "سرش گردد از گنج دینار کش",
      "verse_number": 41
    },
    {
      "id": "b38d2e78-6259-46b0-8c2e-d9ebd25d140d",
      "m1": "سرش را بپیچم ز کنداوری",
      "m2": "نباید که جوید کسی مهتری",
      "verse_number": 42
    },
    {
      "id": "82f10a11-54ed-49fd-89ab-cc0a3740d6fd",
      "m1": "چنین است انجام و آغاز ما",
      "m2": "سخن گفتن فاش و هم راز ما",
      "verse_number": 43
    },
    {
      "id": "0ffc79e7-c67f-49c9-af5b-ceff0c75d360",
      "m1": "درود جهان آفرین برشماست",
      "m2": "خم چرخ گردان زمین شماست",
      "verse_number": 44
    },
    {
      "id": "c6531781-d5ed-4bac-b324-884744610c4e",
      "m1": "چو بشنید گفتار او انجمن",
      "m2": "پر اندیشه گشتند زان تن بتن",
      "verse_number": 45
    },
    {
      "id": "fced50eb-cdb4-4404-a340-4e3e0df4388d",
      "m1": "سرگنج داران پر از بیم گشت",
      "m2": "ستمکاره را دل به دو نیم گشت",
      "verse_number": 46
    },
    {
      "id": "af8060cd-90aa-4c1b-a4b8-4ad1f8b4df1b",
      "m1": "خردمند ودرویش زان هرک بود",
      "m2": "به دلش اندرون شادمانی فزود",
      "verse_number": 47
    },
    {
      "id": "3d9aa6a1-b3f5-44bf-97b5-ad95ae16ff2d",
      "m1": "چنین بود تا شد بزرگیش راست",
      "m2": "هرآن چیز درپادشاهی که خواست",
      "verse_number": 48
    },
    {
      "id": "5defda4f-3b69-416b-8ea4-cc27e77fe515",
      "m1": "برآشفت وخوی بد آورد پیش",
      "m2": "به یکسو شد از راه آیین وکیش",
      "verse_number": 49
    },
    {
      "id": "b6c555f3-22f1-473c-8303-ffeae5ba1f81",
      "m1": "هرآنکس که نزد پدرش ارجمند",
      "m2": "بدی شاد و ایمن زبیم گزند",
      "verse_number": 50
    },
    {
      "id": "a1368586-983e-4092-a618-3aebf532e992",
      "m1": "یکایک تبه کردشان بیگناه",
      "m2": "بدین گونه بد رای و آیین شاه",
      "verse_number": 51
    },
    {
      "id": "78060a4c-a5f5-4b82-acbd-111eeff08a68",
      "m1": "سه مرد از دبیران نوشین روان",
      "m2": "یکی پیر ودانا و دیگر جوان",
      "verse_number": 52
    },
    {
      "id": "c79354c1-f17e-4f53-81b3-135265eef152",
      "m1": "چو ایزد گشسب و دگر برزمهر",
      "m2": "دبیر خردمند با فر وچهر",
      "verse_number": 53
    },
    {
      "id": "a63c9702-9d85-4f2f-9f2f-625dd41e0068",
      "m1": "سه دیگر که ماه آذرش بود نام",
      "m2": "خردمند و روشن دل و شادکام",
      "verse_number": 54
    },
    {
      "id": "c1aaf7c0-adbf-43b4-b009-f84b8d10d6f5",
      "m1": "برتخت نوشین روان این سه پیر",
      "m2": "چو دستور بودند وهمچون وزیر",
      "verse_number": 55
    },
    {
      "id": "63923762-1354-4040-af9c-0fe569f19bdd",
      "m1": "همیخواست هرمز کزین هرسه مرد",
      "m2": "یکایک برآرد بناگاه گرد",
      "verse_number": 56
    },
    {
      "id": "391bd993-81c8-45e8-9396-e7fb79de19ba",
      "m1": "همیبود ز ایشان دلش پرهراس",
      "m2": "که روزی شوند اندرو ناسپاس",
      "verse_number": 57
    },
    {
      "id": "3d707822-f987-45c3-ac23-8a176134d8c6",
      "m1": "بایزد گشسب آن زمان دست آخت",
      "m2": "به بیهوده بربند و زندانش ساخت",
      "verse_number": 58
    },
    {
      "id": "4feb445b-796b-478f-9aa0-bbb451e76b72",
      "m1": "دل موبد موبدان تنگ شد",
      "m2": "رخانش ز اندیشه بیرنگ شد",
      "verse_number": 59
    },
    {
      "id": "36387896-3807-41b1-a432-2bd60987809b",
      "m1": "که موبد بد وپاک بودش سرشت",
      "m2": "بمردی ورا نام بد زردهشت",
      "verse_number": 60
    },
    {
      "id": "43fbc0b0-2e5d-4aca-89ec-6c23ec668473",
      "m1": "ازان بند ایزدگشسب دبیر",
      "m2": "چنان شد که دل خسته گردد به تیر",
      "verse_number": 61
    },
    {
      "id": "67ae63a8-8b2c-4d32-a886-d27fe7ed18c6",
      "m1": "چو روزی برآمد نبودش زوار",
      "m2": "نه خورد ونه پوشش نه انده گسار",
      "verse_number": 62
    },
    {
      "id": "4ea2a2c9-baa3-4e04-ac3c-bd30cb587999",
      "m1": "ز زندان پیامی فرستاد دوست",
      "m2": "به موبد که ای بنده را مغز و پوست",
      "verse_number": 63
    },
    {
      "id": "1d70baa2-26d6-4ca6-b671-5345d256fc60",
      "m1": "منم بیزواری به زندان شاه",
      "m2": "کسی را به نزدیک من نیست راه",
      "verse_number": 64
    },
    {
      "id": "5acc88f0-cd9c-4ff8-8b96-87fd651c4f3a",
      "m1": "همی خوردنی آرزوی آیدم",
      "m2": "شکم گرسنه رنج بفزایدم",
      "verse_number": 65
    },
    {
      "id": "2c87a080-3bd9-4d5b-9ea6-c3f223e30dfb",
      "m1": "یکی خوردنی پاک پیشم فرست",
      "m2": "دوایی بدین درد ریشم فرست",
      "verse_number": 66
    },
    {
      "id": "aef700e9-b751-4b28-a24d-b6b81cea7355",
      "m1": "دل موبد از درد پیغام اوی",
      "m2": "غمی گشت زان جای و آرام اوی",
      "verse_number": 67
    },
    {
      "id": "e28c1dc2-c82a-4345-9f97-40d525bdd7e6",
      "m1": "چنان داد پاسخ که از کار بند",
      "m2": "منال ار نیاید به جانت گزند",
      "verse_number": 68
    },
    {
      "id": "b9163ac1-f238-418e-87f7-114c027fb639",
      "m1": "ز پیغام اوشد دلش پرشکن",
      "m2": "پراندیشه شد مغزش از خویشتن",
      "verse_number": 69
    },
    {
      "id": "1fdc68fe-77d2-4b50-96fa-7536ba7c1d57",
      "m1": "به زندان فرستاد لختی خورش",
      "m2": "بلرزید زان کار دل در برش",
      "verse_number": 70
    },
    {
      "id": "34b8c4c6-e241-4919-919a-da1ef3876223",
      "m1": "همیگفت کاکنون شود آگهی",
      "m2": "بدین ناجوانمرد بیفرهی",
      "verse_number": 71
    },
    {
      "id": "8c251b62-6586-4e63-87ec-4e10c36585ab",
      "m1": "که موبد به زندان فرستاد چیز",
      "m2": "نیرزد تن ما برش یک پشیز",
      "verse_number": 72
    },
    {
      "id": "d6c0c8ee-9fe6-4af5-95c1-87f8936a52a3",
      "m1": "گزند آیدم زین جهاندار مرد",
      "m2": "کند برمن از خشم رخساره زرد",
      "verse_number": 73
    },
    {
      "id": "2a8eb657-fe45-4983-95b8-54be7bfa572c",
      "m1": "هم از بهر ایزد گشسب دبیر",
      "m2": "دلش بود پیچان و رخ چون زریر",
      "verse_number": 74
    },
    {
      "id": "769a8574-96ef-451f-bec2-0bdd24a6ab72",
      "m1": "بفرمود تا پاک خوالیگرش",
      "m2": "به زندان کشد خوردنیها برش",
      "verse_number": 75
    },
    {
      "id": "34968340-7e12-4081-8b9d-d06e63b9363d",
      "m1": "ازان پس نشست از بر تازی اسب",
      "m2": "بیامد به نزدیک ایزد گشسب",
      "verse_number": 76
    },
