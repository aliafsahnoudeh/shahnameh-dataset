      "id": "22dfe2eb-1516-4816-bc3f-4838251b191b",
      "m1": "که ویرانی شهر ایران ازوست",
      "m2": "که مه مغز بادش بتن بر مه پوست",
      "verse_number": 153
    },
    {
      "id": "cb6771ce-d833-4cc9-a0d0-ca4517aad313",
      "m1": "نگوید سخن جز همه بتری",
      "m2": "بر آن بتری بر کند داوری",
      "verse_number": 154
    },
    {
      "id": "9ca6eadf-55eb-40b2-8360-08262385af47",
      "m1": "چو سیمای برزین شنید این سخن",
      "m2": "بدو گفت کای نیک یار کهن",
      "verse_number": 155
    },
    {
      "id": "bee29f6c-0242-4b2e-b7c9-4bec9b7691be",
      "m1": "ببد برتن من گوایی مده",
      "m2": "چنین دیو را آشنایی مده",
      "verse_number": 156
    },
    {
      "id": "ab656c89-78c7-4917-80e7-59299620d43c",
      "m1": "چه دیدی ز من تا تو یار منی",
      "m2": "ز کردار و گفتار آهرمنی",
      "verse_number": 157
    },
    {
      "id": "7b2934bb-6391-4120-be96-694a5319c00a",
      "m1": "بدو گفت بهرام آذرمهان",
      "m2": "که تخمی پراگندهای در جهان",
      "verse_number": 158
    },
    {
      "id": "ca52ec36-85ba-417c-862c-ccf5e07ce460",
      "m1": "کزان بر نخستین توخواهی درود",
      "m2": "از آتش نیابی مگر تیره دود",
      "verse_number": 159
    },
    {
      "id": "fe78b3d6-2dda-47e9-84e0-ea324647fbd4",
      "m1": "چو کسری مرا و تو را پیش خواند",
      "m2": "بر تخت شاهنشهی برنشاند",
      "verse_number": 160
    },
    {
      "id": "20b77d07-d051-4710-bb6c-b75c626c7778",
      "m1": "ابا موبد موبدان برزمهر",
      "m2": "چوایزدگشسب آن مه خوب چهر",
      "verse_number": 161
    },
    {
      "id": "7b9cd093-dd9c-4e38-92b3-a925f23e7388",
      "m1": "بپرسید کین تخت شاهنشهی",
      "m2": "کرا زیبد و کیست با فرهی",
      "verse_number": 162
    },
    {
      "id": "bf2b9cd6-07d4-40b6-b119-fd3f70955889",
      "m1": "بکهتر دهم گر به مهتر پسر",
      "m2": "که باشد بشاهی سزاوارتر",
      "verse_number": 163
    },
    {
      "id": "81860d65-d61e-43c1-a20a-52a49209e60b",
      "m1": "همه یکسر از جای برخاستیم",
      "m2": "زبان پاسخش را بیاراستیم",
      "verse_number": 164
    },
    {
      "id": "1613e910-dd18-481f-94d4-ea288afe687f",
      "m1": "که این ترکزاده سزاوارنیست",
      "m2": "بشاهی کس او را خریدار نیست",
      "verse_number": 165
    },
    {
      "id": "5313cce5-859a-4b47-84fe-a53cc5527147",
      "m1": "که خاقان نژادست و بد گوهرست",
      "m2": "ببالا و دیدار چون مادرست",
      "verse_number": 166
    },
    {
      "id": "e2d0add4-98a7-4e55-bff8-eb567b3b75f8",
      "m1": "تو گفتی که هرمز بشاهی سزاست",
      "m2": "کنون زین سزا مر تو را این جزاست",
      "verse_number": 167
    },
    {
      "id": "78bd2fbd-1f59-4889-b0c2-023dbf0a1bd4",
      "m1": "گوایی من از بهر این دادمت",
      "m2": "چنین لب به دشنام بگشادمت",
      "verse_number": 168
    },
    {
      "id": "9439c5eb-a5b9-4bee-870c-4966cbfcd4e9",
      "m1": "ز تشویر هرمز فروپژمرید",
      "m2": "چو آن راست گفتار او را شنید",
      "verse_number": 169
    },
    {
      "id": "8d1bcf44-a5db-4203-8c2d-b7a24bfa0cb1",
      "m1": "به زندان فرستادشان تیره شب",
      "m2": "وز ایشان ببد تیز بگشاد لب",
      "verse_number": 170
    },
    {
      "id": "d7dd8d2c-16a7-4421-b5c8-4c4a589aecf5",
      "m1": "سیم شب چو برزد سر از کوه ماه",
      "m2": "ز سیمای برزین بپردخت شاه",
      "verse_number": 171
    },
    {
      "id": "62d0a494-50f8-40d6-b637-eaab977b54ac",
      "m1": "به زندان دزدان مر او را بکشت",
      "m2": "ندارد جز از رنج و نفرین بمشت",
      "verse_number": 172
    },
    {
      "id": "7182a396-ddfb-4000-8ab4-e878e9729e13",
      "m1": "چو بهرام آذرمهان آن شنید",
      "m2": "که آن پاکدل مرد شد ناپدید",
      "verse_number": 173
    },
    {
      "id": "31e060ea-2545-4000-ac8c-657babe8130d",
      "m1": "پیامی فرستاد نزدیک شاه",
      "m2": "که ای تاج تو برتر از چرخ ماه",
      "verse_number": 174
    },
    {
      "id": "5776dbd7-bc90-4ae4-bb0a-2c3fc202c88c",
      "m1": "تو دانی که من چند کوشیدهام",
      "m2": "که تا رازهای تو پوشیدهام",
      "verse_number": 175
    },
    {
      "id": "b7660a6c-fe02-43ad-aba9-038fda3bd560",
      "m1": "به پیش پدرت آن سزاوار شاه",
      "m2": "نبودم تو را جز همه نیکخواه",
      "verse_number": 176
    },
    {
      "id": "cf43cc19-95fb-4a9a-8226-03468c14282c",
      "m1": "یکی پند گویم چوخوانی مرا",
      "m2": "بر تخت شاهی نشانی مرا",
      "verse_number": 177
    },
    {
      "id": "9c48c430-14dd-4419-94d7-45797cfda958",
      "m1": "تو را سودمندیست از پند من",
      "m2": "به زندان بمان یک زمان بند من",
      "verse_number": 178
    },
    {
      "id": "734a69d6-8685-4317-8305-48adb3c846de",
      "m1": "به ایران تو راسودمندی بود",
      "m2": "خردمند را بیگزندی بود",
      "verse_number": 179
    },
    {
      "id": "de998824-e1fb-412f-9f79-2828b532be0e",
      "m1": "پیامش چو نزدیک هرمز رسید",
      "m2": "یکی رازدار از میان برگزید",
      "verse_number": 180
    },
    {
      "id": "afb6ee09-4e11-4f74-9ebb-aba2c50f5397",
      "m1": "که بهرام را پیش شاه آورد",
      "m2": "بدان نامور بارگاه آورد",
      "verse_number": 181
    },
    {
      "id": "bbb7fbe1-62a8-4b3a-ae93-6d77c5b5993d",
      "m1": "شب تیره بهرام را پیش خواند",
      "m2": "به چربی سخن چند با او براند",
      "verse_number": 182
    },
    {
      "id": "0c17aaaa-e550-4bba-b001-20b07a706e75",
      "m1": "بدو گفت برگوی کان پند چیست",
      "m2": "که ما را بدان روزگار بهیست",
      "verse_number": 183
    },
    {
      "id": "4652c832-b637-4a81-abfc-32b761bf4057",
      "m1": "چنین داد پاسخ که در گنج شاه",
      "m2": "یکی ساده صندوق دیدم سیاه",
      "verse_number": 184
    },
    {
      "id": "a5025a6f-12de-4ffc-b75e-abc57a1fb4a7",
      "m1": "نهاده به صندوق در حقهای",
      "m2": "بحقه درون پارسی رقعهای",
      "verse_number": 185
    },
    {
      "id": "cf8e60e9-46f9-4b8e-98db-a4a68367c69c",
      "m1": "نبشتست بر پرنیان سپید",
      "m2": "بدان باشد ایرانیان را امید",
      "verse_number": 186
    },
    {
      "id": "55b0e897-e805-4b51-8100-2ad0f7184ce1",
      "m1": "به خط پدرت آن جهاندار شاه",
      "m2": "تو را اندران کرد باید نگاه",
      "verse_number": 187
    },
    {
      "id": "435f8008-9fa2-4560-8ac0-d678e10c3aad",
      "m1": "چوهرمز شنید آن فرستاد کس",
      "m2": "به نزدیک گنجور فریادرس",
      "verse_number": 188
    },
    {
      "id": "bf55bd0a-09ff-4178-be0f-fecb59fb5b5c",
      "m1": "که در گنجهای پدر بازجوی",
      "m2": "یکی ساده صندوق و مهری بروی",
      "verse_number": 189
    },
    {
      "id": "f99ac9d4-8e83-4b56-ac53-3a293a0a2fe1",
      "m1": "بران مهر بر نام نوشینروان",
      "m2": "که جاوید بادا روانش جوان",
      "verse_number": 190
    },
    {
      "id": "b7d7483c-c600-494e-9324-1f2e6949c65d",
      "m1": "هم اکنون شب تیره پیش من آر",
      "m2": "فراوان بجستن مبر روزگار",
      "verse_number": 191
    },
    {
      "id": "d7a304a3-3016-424d-bbfb-97bc178a00c6",
      "m1": "شتابید گنجور و صندوق جست",
      "m2": "بیاورد پویان به مهر درست",
      "verse_number": 192
    },
    {
      "id": "1b4387b8-ee18-43ee-9644-7cd86529c64c",
      "m1": "جهاندار صندوق را برگشاد",
      "m2": "فراوان ز نوشینروان کرد یاد",
      "verse_number": 193
    },
    {
      "id": "52af5853-857d-453b-820b-bd93ec2e3e36",
      "m1": "به صندوق در حقه با مهر دید",
      "m2": "شتابید وزو پرنیان برکشید",
      "verse_number": 194
    },
    {
      "id": "1665d3a7-f0a6-496a-9912-8610953b7ff9",
      "m1": "نگه کرد پس خط نوشینروان",
      "m2": "نبشته بران رقعهٔ پرنیان",
      "verse_number": 195
    },
    {
      "id": "f4e6a53d-7ea8-4f8f-9e92-8f2378347f73",
      "m1": "که هرمز بده سال و بر سر دوسال",
      "m2": "یکی شهریاری بود بیهمال",
      "verse_number": 196
    },
    {
      "id": "8340661c-a0e2-4a05-9605-28d81985ee5b",
      "m1": "ازان پس پرآشوب گردد جهان",
      "m2": "شود نام و آواز او درنهان",
      "verse_number": 197
    },
    {
      "id": "82c7a4d0-ab42-4eac-8f47-c4e659295443",
      "m1": "پدید آید ازهرسویی دشمنی",
      "m2": "یکی بدنژادی وآهرمنی",
      "verse_number": 198
    },
    {
      "id": "e8f1b28f-2ba1-4343-8c28-be22e1f64f56",
      "m1": "پراگنده گردد ز هر سو سپاه",
      "m2": "فروافگند دشمن او را ز گاه",
      "verse_number": 199
    },
    {
      "id": "b769e581-643e-4b29-a25c-79296884dde5",
      "m1": "دو چشمش کند کور خویش زنش",
      "m2": "ازان پس برآرند هوش از تنش",
      "verse_number": 200
    },
    {
      "id": "108c536a-0107-4d54-85af-bd7ae9428735",
      "m1": "به خط پدر هرمز آن رقعه دید",
      "m2": "هراسان شد و پرنیان برکشید",
      "verse_number": 201
    },
    {
      "id": "5a842915-cc4d-4fe8-918d-f2a02553d888",
      "m1": "دوچشمش پر از خون شد و روی زرد",
      "m2": "ببهرام گفت ای جفاپیشه مرد",
      "verse_number": 202
    },
    {
      "id": "cc4808c6-2f1c-483e-82fc-5f1204238efe",
      "m1": "چه جستی ازین رقعه اندرهمی",
      "m2": "بخواهی ربودن ز من سر همی",
      "verse_number": 203
    },
    {
      "id": "e08fbf21-c4de-4c12-88cd-faed4f8af2bc",
      "m1": "بدو گفت بهرام کای ترک زاد",
      "m2": "به خون ریختن تا نباشی تو شاد",
      "verse_number": 204
    },
    {
      "id": "4b9dfb83-82c2-4936-a9cb-ea85cad6fc12",
      "m1": "توخاقان نژادی نه از کیقباد",
      "m2": "که کسری تو را تاج بر سر نهاد",
      "verse_number": 205
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 205
  }
}