{
  "id": "0688fa36-5094-409f-a12b-8d51d8f6fdd6",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "16076a73-3a64-4101-89b9-c85f476220da",
      "m1": "فرستاده نزدیک پیران رسید",
      "m2": "بجوشید چون گفت هومان شنید",
      "verse_number": 1
    },
    {
      "id": "e6659656-475f-441d-92cb-764adfeccdab",
      "m1": "بیامد شب تیره هنگام خواب",
      "m2": "همی راند لشکر بکردار آب",
      "verse_number": 2
    },
    {
      "id": "7247e5af-b2b0-4d45-aa3d-4a378f851c81",
      "m1": "چو خورشید زان چادر قیرگون",
      "m2": "غمی شد بدرید و آمد برون",
      "verse_number": 3
    },
    {
      "id": "96e9676b-2d74-4b81-b66f-d4cc4ea7722a",
      "m1": "سپهبد بکوه هماون رسید",
      "m2": "ز گرد سپه کوه شد ناپدید",
      "verse_number": 4
    },
    {
      "id": "c4f8fddc-027a-4a2d-a666-488247bbeb72",
      "m1": "بهومان چنین گفت کز رزمگاه",
      "m2": "مجنب و مجنبان از ایدر سپاه",
      "verse_number": 5
    },
    {
      "id": "7d449e59-a14a-42e2-a10f-eec437dd61dc",
      "m1": "شوم تا سپهدار ایرانیان",
      "m2": "چه دارد بپا اختر کاویان",
      "verse_number": 6
    },
    {
      "id": "356f4615-068d-4f29-8964-62713c8a1ab6",
      "m1": "بکوه هماون که دادش نوید",
      "m2": "بدین بودن اکنون چه دارد امید",
      "verse_number": 7
    },
    {
      "id": "392931d8-830f-4c5f-9972-e128025a4631",
      "m1": "بیامد بنزدیک ایران سپاه",
      "m2": "سری پر ز کینه دلی پرگناه",
      "verse_number": 8
    },
    {
      "id": "cde68d54-d962-466b-a15f-2efa00836554",
      "m1": "خروشید کای نامبردار طوس",
      "m2": "خداوند پیلان و گوپال و کوس",
      "verse_number": 9
    },
    {
      "id": "0fd8c6a0-2edc-4d5c-9c29-935210d8266e",
      "m1": "کنون ماهیان اندر آمد به پنج",
      "m2": "که تا تو همی رزم جویی برنج",
      "verse_number": 10
    },
    {
      "id": "41264d7c-ee89-4288-96c7-c783ae261027",
      "m1": "ز گودرزیان آن کجا مهترند",
      "m2": "بدان رزمگاهت همه بیسرند",
      "verse_number": 11
    },
    {
      "id": "e71ab409-5a24-42d3-a001-933f60eafe05",
      "m1": "تو چون غرم رفتستی اندر کمر",
      "m2": "پر از داوری دل پر از کینه سر",
      "verse_number": 12
    },
    {
      "id": "282450b4-b82d-465e-a4f3-267b529a6560",
      "m1": "گریزان و لشکر پس اندر دمان",
      "m2": "بدام اندر آیی همی بیگمان",
      "verse_number": 13
    },
    {
      "id": "eb230f0f-a390-46fa-a436-1658f6dfee28",
      "m1": "چنین داد پاسخ سرافراز طوس",
      "m2": "که من بر دروغ تو دارم فسوس",
      "verse_number": 14
    },
    {
      "id": "dfa77df6-7f88-4dd5-96e0-b07fe11aa2dd",
      "m1": "پی کین تو افگندی اندر جهان",
      "m2": "ز بهر سیاوش میان مهان",
      "verse_number": 15
    },
    {
      "id": "0cf658e0-3dc1-427a-b7c0-85565ee35f5c",
      "m1": "برین گونه تا چند گویی دروغ",
      "m2": "دروغت بر ما نگیرد فروغ",
      "verse_number": 16
    },
    {
      "id": "6390b281-e1ae-447d-a248-01fbaf5964d7",
      "m1": "علف تنگ بود اندران رزمگاه",
      "m2": "ازان بر هماون کشیدم سپاه",
      "verse_number": 17
    },
    {
      "id": "623b9005-e4de-401f-95f9-e89168adb1c3",
      "m1": "کنون آگهی شد بشاه جهان",
      "m2": "بیاید زمان تا زمان ناگهان",
      "verse_number": 18
    },
    {
      "id": "b38c5a70-32c6-4f99-82b9-2c14122261cd",
      "m1": "بزرگان لشکر شدند انجمن",
      "m2": "چو دستان و چون رستم پیلتن",
      "verse_number": 19
    },
    {
      "id": "04de5d1f-7f86-4362-9a52-e935729e2357",
      "m1": "چو جنبیدن شاه کردم درست",
      "m2": "نمانم بتوران بر و بوم و رست",
      "verse_number": 20
    },
    {
      "id": "0df09fde-1407-4cdc-bd0f-722b81d9fcfc",
      "m1": "کنون کامدی کار مردان ببین",
      "m2": "نه گاه فریبست و روز کمین",
      "verse_number": 21
    },
    {
      "id": "abedc5b4-1c3f-4879-9d38-3d1305bea582",
      "m1": "چو بشنید پیران ز هر سو سپاه",
      "m2": "فرستاد و بگرفت بر کوه راه",
      "verse_number": 22
    },
    {
      "id": "2ee92e9b-6f17-47b5-9bd4-cde7a45ba40e",
      "m1": "بهر سو ز توران بیامد گروه",
      "m2": "سپاه انجمن کرد بر گرد کوه",
      "verse_number": 23
    },
    {
      "id": "27452523-e45e-489f-9103-9f154b905a61",
      "m1": "بریشان چو راه علف تنگ شد",
      "m2": "سپهبد سوی چارهٔ جنگ شد",
      "verse_number": 24
    },
    {
      "id": "918025fa-8ea2-4de3-a31c-67abce9353e4",
      "m1": "چنین گفت هومان بپیران گرد",
      "m2": "که ما را پی کوه باید سپرد",
      "verse_number": 25
    },
    {
      "id": "a304886c-f9e3-469b-9507-5434f4643c8f",
      "m1": "یکی جنگ سازیم کایرانیان",
      "m2": "نبندند ازین پس بکینه میان",
      "verse_number": 26
    },
    {
      "id": "792f6c18-c625-4572-993e-0f091f5ad8c4",
      "m1": "بدو گفت پیران که بر ماست باد",
      "m2": "نکردست با باد کس رزم یاد",
      "verse_number": 27
    },
    {
      "id": "6f744ae9-5d7a-43e6-ac5c-8b1f7210436b",
      "m1": "ز جنگ پیاده بپیچید سر",
      "m2": "شود تیره دیدار پرخاشخر",
      "verse_number": 28
    },
    {
      "id": "56d50107-39cb-42e5-bf9f-9b3761f874df",
      "m1": "چو راه علف تنگ شد بر سپاه",
      "m2": "کسی کوه خارا ندارد نگاه",
      "verse_number": 29
    },
    {
      "id": "8d497bb4-57e3-4d31-9fdb-bb550b5cb625",
      "m1": "همه لشکر آید بزنهار ما",
      "m2": "ازین پس نجویند پیکار ما",
      "verse_number": 30
    },
    {
      "id": "c01f6840-486c-406f-9d42-06d4eb1f48a4",
      "m1": "بریشان کنون جای بخشایش است",
      "m2": "نه هنگام پیکار و آرایش است",
      "verse_number": 31
    },
    {
      "id": "71388b0a-e759-4982-a55f-abfffff4e5c9",
      "m1": "رسید این سگالش بگودرز و طوس",
      "m2": "سر سرکشان خیره گشت از فسوس",
      "verse_number": 32
    },
    {
      "id": "a4b03977-697d-4720-94bd-b7335e7901d2",
      "m1": "چنین گفت با طوس گودرز پیر",
      "m2": "که ما را کنون جنگ شد ناگزیر",
      "verse_number": 33
    },
    {
      "id": "34a82332-7fce-4397-b026-2742c88e2ef5",
      "m1": "سه روز ار بود خوردنی بیش نیست",
      "m2": "ز یکسو گشاده رهی پیش نیست",
      "verse_number": 34
    },
    {
      "id": "9eee0006-2ed1-4cfd-b2bb-d3f66e62d62a",
      "m1": "نه خورد و نه چیز و نه بار و بنه",
      "m2": "چنین چند باشد سپه گرسنه",
      "verse_number": 35
    },
    {
      "id": "dd065fa0-e571-41f9-af41-dbc2d6c0d02f",
      "m1": "کنون چون شود روی خورشید زرد",
      "m2": "پدید آید آن چادر لاژورد",
      "verse_number": 36
    },
    {
      "id": "8b5f59a1-fb48-4a42-a19a-faf18863a077",
      "m1": "بباید گزیدن سواران مرد",
      "m2": "ز بالا شدن سوی دشت نبرد",
      "verse_number": 37
    },
    {
      "id": "6bb4f856-1a7e-48fd-87df-645de534c41f",
      "m1": "بسان شبیخون یکی رزم سخت",
      "m2": "بسازیم تا چون بود یار بخت",
      "verse_number": 38
    },
    {
      "id": "f57362e0-ed82-48fc-aa7d-9cf1c0a095cc",
      "m1": "اگر یک بیک تن بکشتن دهیم",
      "m2": "وگر تاج گردنکشان برنهیم",
      "verse_number": 39
    },
    {
      "id": "6515418a-864f-4a9e-8dd6-721618644206",
      "m1": "چنین است فرجام آوردگاه",
      "m2": "یکی خاک یابد یکی تاج و گاه",
      "verse_number": 40
    },
    {
      "id": "79dba10f-c89e-4110-ac71-9ba49c747a55",
      "m1": "ز گودرز بشنید طوس این سخن",
      "m2": "سرش گشت پردرد و کین کهن",
      "verse_number": 41
    },
    {
      "id": "0083c9a4-ddde-4ed4-ac84-d0cc3516c310",
      "m1": "ز یک سوی لشکر به بیژن سپرد",
      "m2": "دگر سو بشیدوش و خراد گرد",
      "verse_number": 42
    },
    {
      "id": "1decc40e-2867-4000-b095-9cfd8e89b9f5",
      "m1": "درفش خجسته بگستهم داد",
      "m2": "بسی پند و اندرزها کرد یاد",
      "verse_number": 43
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 43
  },
