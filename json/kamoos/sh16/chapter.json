{
  "id": "dc790a2c-2d04-4664-9230-b2c55ab882af",
  "title": "بخش ۱۶",
  "verses": [
    {
      "id": "2528e621-011c-4dc0-876f-2625d5fcd28f",
      "m1": "بپوشید رستم سلیح نبرد",
      "m2": "به آوردگه رفت با داروبرد",
      "verse_number": 1
    },
    {
      "id": "de921ae2-4f19-43db-82af-dc3665dfac8d",
      "m1": "زره زیر بد جوشن اندر میان",
      "m2": "ازان پس بپوشید ببربیان",
      "verse_number": 2
    },
    {
      "id": "ecc3f6bc-a512-4dc4-888b-1260be5419b3",
      "m1": "گرانمایه مغفر بسر بر نهاد",
      "m2": "همی کرد بدخواهش از مرگ یاد",
      "verse_number": 3
    },
    {
      "id": "cff72fac-3bf1-4a8a-bddd-aede71b67738",
      "m1": "بنیروی یزدان میان را ببست",
      "m2": "نشست از بر رخش چون پیل مست",
      "verse_number": 4
    },
    {
      "id": "8f5cb2c0-823b-47ea-b564-2583a5057ba0",
      "m1": "ز بالای او آسمان خیره گشت",
      "m2": "زمین از پی رخش او تیره گشت",
      "verse_number": 5
    },
    {
      "id": "0432552d-2c8b-416f-8e4f-4dafd9cdadd3",
      "m1": "برآمد ز هر دو سپه بوق و کوس",
      "m2": "زمین آهنین شد سپهر آبنوس",
      "verse_number": 6
    },
    {
      "id": "d0547baf-09b0-40f1-a648-2d1e2c3bd474",
      "m1": "جهان لرز لرزان شد و دشت و کوه",
      "m2": "زمین شد ز نعل ستوران ستوه",
      "verse_number": 7
    },
    {
      "id": "57ac0fc2-950f-4340-8bbf-d432282ed352",
      "m1": "وزین روی کاموس بر میمنه",
      "m2": "پس پشت او ژنده پیل و بنه",
      "verse_number": 8
    },
    {
      "id": "eaf54a02-95b6-45ca-a0b2-2c4a02642d78",
      "m1": "ابر میسره لشکر آرای هند",
      "m2": "زرهدار با تیغ و هندی پرند",
      "verse_number": 9
    },
    {
      "id": "6f91b749-62ba-4d0d-9506-08168997ed5c",
      "m1": "بقلب اندرون جای خاقان چین",
      "m2": "شده آسمان تار و جنبان زمین",
      "verse_number": 10
    },
    {
      "id": "03318aba-9857-4d9c-9bcf-ee73e1057ad6",
      "m1": "وزین رو فریبرز بر میسره",
      "m2": "چو خورشید تابان ز برج بره",
      "verse_number": 11
    },
    {
      "id": "a3d553e6-e280-48eb-853f-0c9cf1a09832",
      "m1": "سوی میمنه پور کشواد بود",
      "m2": "که کتفش همه زیر پولاد بود",
      "verse_number": 12
    },
    {
      "id": "ed51ae44-1cec-4229-abd3-15a4e72a1439",
      "m1": "بقلب اندرون طوس نوذر بپای",
      "m2": "به پیش سپه کوس با کرنای",
      "verse_number": 13
    },
    {
      "id": "058a7854-289f-40e7-9c24-fa8f7f97e0fa",
      "m1": "همی دود آتش برآمد ز آب",
      "m2": "نبیند چنین رزم جنگی بخواب",
      "verse_number": 14
    },
    {
      "id": "d24681dc-9d4e-4200-be55-70464fba60e8",
      "m1": "برآمد ز هر سوی لشکر خروش",
      "m2": "همی پیل را زان بدرید گوش",
      "verse_number": 15
    },
    {
      "id": "10029fb2-58c8-4d43-95ea-72c2e7765331",
      "m1": "نخستین که آمد میان دو صف",
      "m2": "ز خون جگر بر لب آورده کف",
      "verse_number": 16
    },
    {
      "id": "f19c3f56-5d03-4cff-8429-479b0f3087f8",
      "m1": "سپهبد سرافراز کاموس بود",
      "m2": "که با لشکر و پیل و با کوس بود",
      "verse_number": 17
    },
    {
      "id": "7386e459-9a11-482d-98b4-91a7fcc146fc",
      "m1": "همی برخروشید چون پیل مست",
      "m2": "یکی گُرزهٔ گاو پیکر بدست",
      "verse_number": 18
    },
    {
      "id": "a1af9a63-2a46-445e-9fb7-608b29c8d25f",
      "m1": "که آن جنگجوی پیاده کجاست",
      "m2": "که از نامداران چنین رزم خواست",
      "verse_number": 19
    },
    {
      "id": "6a719522-ec35-4798-93eb-dc22ad12d7bd",
      "m1": "کنون گر بیاید به آوردگاه",
      "m2": "تهی ماند از تیر او جایگاه",
      "verse_number": 20
    },
    {
      "id": "d5d835ac-fbd0-4b2a-9bf9-0bd85bf25d07",
      "m1": "ورا دیده بودند گردان نیو",
      "m2": "چو طوس سرافراز و رهام و گیو",
      "verse_number": 21
    },
    {
      "id": "facc1eac-3716-490f-b838-7ea963d1a803",
      "m1": "کسی را نیامد همی رزم رای",
      "m2": "ز گردان ایران تهی ماند جای",
      "verse_number": 22
    },
    {
      "id": "69a3d29a-17eb-45fa-b4be-2bb78f1a40f5",
      "m1": "که با او کسی را نبد تاو جنگ",
      "m2": "دلیران چو آهو و او چون پلنگ",
      "verse_number": 23
    },
    {
      "id": "f38b7a2e-bd32-4220-af0e-0e458c6011b3",
      "m1": "یکی زابلی بود الوای نام",
      "m2": "سبک تیغ کین برکشید از نیام",
      "verse_number": 24
    },
    {
      "id": "c97aabf7-ddb2-4b37-9b56-e38b8f6d2ac8",
      "m1": "کجا نیزهٔ رستم او داشتی",
      "m2": "پس پشت او هیچ نگذاشتی",
      "verse_number": 25
    },
    {
      "id": "4bb416f5-708f-425d-827a-87c0a69ab799",
      "m1": "بسی رنج برده بکار عنان",
      "m2": "بیاموخته گُرز و تیر و سنان",
      "verse_number": 26
    },
    {
      "id": "9d0d2154-34e4-45ee-b98c-569020952cec",
      "m1": "برنج و بسختی جگر سوخته",
      "m2": "ز رستم هنرها بیاموخته",
      "verse_number": 27
    },
    {
      "id": "17aac4ff-518b-4591-8676-2d1b0e9a5faa",
      "m1": "بدو گفت رستم که بیدار باش",
      "m2": "بآورد این ترک هشیار باش",
      "verse_number": 28
    },
    {
      "id": "6cd66cbe-0eb7-45a0-b473-f2a2db6f5e61",
      "m1": "مشو غرق ز آب هنرهای خویش",
      "m2": "نگهدار بر جایگه پای خویش",
      "verse_number": 29
    },
    {
      "id": "652894d2-d5be-414d-bd16-72a21ed337b2",
      "m1": "چو قطره بر ژرف دریا بری",
      "m2": "بدیوانگی ماند این داوری",
      "verse_number": 30
    },
    {
      "id": "4e4b256f-20df-43a2-b4f6-982d2eaf5bc8",
      "m1": "شد الوای آهنگ کاموس کرد",
      "m2": "که جوید بآورد با او نبرد",
      "verse_number": 31
    },
    {
      "id": "5fb6e3aa-ecf5-4b3c-8710-94c121be3521",
      "m1": "نهادند آوردگاهی بزرگ",
      "m2": "کشانی بیامد بکردار گرگ",
      "verse_number": 32
    },
    {
      "id": "8918cd88-d73b-4d54-abd2-aa9b5d62d374",
      "m1": "بزد نیزه و برگرفتش ز زین",
      "m2": "بینداخت آسان بروی زمین",
      "verse_number": 33
    },
    {
      "id": "33d4b1bb-2612-4696-83a6-9ae831122076",
      "m1": "عنان را گران کرد و او را بنعل",
      "m2": "همی کوفت تا خاک او کرد لعل",
      "verse_number": 34
    },
    {
      "id": "5e92a0b9-5a15-420f-8ba3-061770c4fb8c",
      "m1": "تهمتن ز الوای شد دردمند",
      "m2": "ز فتراک بگشاد پیچان کمند",
      "verse_number": 35
    },
    {
      "id": "5d62d912-59fe-4ea3-a001-a7f8f049f457",
      "m1": "چو آهنگ جنگ سران داشتی",
      "m2": "کمندی و گُرزی گران داشتی",
      "verse_number": 36
    },
    {
      "id": "9c944676-84fe-42dc-b98b-1653eebe430f",
      "m1": "بیامد بغرید چون پیل مست",
      "m2": "کمندی به بازو و گُرزی به دست",
      "verse_number": 37
    },
    {
      "id": "28dc3f8b-f9a3-4c71-bbe6-4e78b0e9922b",
      "m1": "بدو گفت کاموس چندین مدم",
      "m2": "بنیروی این رشتهٔ شصت خم",
      "verse_number": 38
    },
    {
      "id": "569257fb-b133-4080-bcfa-e5cd456fcbd0",
      "m1": "چنین پاسخ آورد رستم که شیر",
      "m2": "چو نخچیر بیند بغرد دلیر",
      "verse_number": 39
    },
    {
      "id": "4494585f-6a7c-4c97-b4c0-27630dfaf215",
      "m1": "نخستین برین کینه بستی کمر",
      "m2": "ز ایران بکشتی یکی نامور",
      "verse_number": 40
    },
    {
      "id": "c3705100-7063-4ffd-9c9c-eeb73ff68af6",
      "m1": "کنون رشته خوانی کمند مرا",
      "m2": "ببینی همی تنگ و بند مرا",
      "verse_number": 41
    },
    {
      "id": "d6ad3471-8c75-46aa-8b92-600e3168f7d1",
      "m1": "زمانه ترا از کشانی براند",
      "m2": "چو ایدر بدت خاک جایت نماند",
      "verse_number": 42
    },
    {
      "id": "f36e9365-734c-4c9f-be1a-dbcb9f932b32",
      "m1": "برانگیخت کاموس اسپ نبرد",
      "m2": "هم آورد را دید با دارو برد",
      "verse_number": 43
    },
    {
      "id": "b9e23efb-0e9a-4a49-874f-a7971e765057",
      "m1": "بینداخت تیغ پرند آورش",
      "m2": "همی خواست از تن بریدن سرش",
      "verse_number": 44
    },
    {
      "id": "944a8787-4cb8-4ae4-b5b3-836ee3a207bd",
      "m1": "سر تیغ بر گردن رخش خورد",
      "m2": "ببرید برگستوان نبرد",
      "verse_number": 45
    },
    {
      "id": "e7a436da-584d-42e8-9901-dbea888551c2",
      "m1": "تن رخش را زان نیامد گزند",
      "m2": "گو پیلتن حلقه کرد آن کمند",
      "verse_number": 46
    },
    {
      "id": "cfc45951-8942-4f8b-a0f8-f7aa66d946b4",
      "m1": "بینداخت و افگندش اندر میان",
      "m2": "برانگیخت از جای پیل ژیان",
      "verse_number": 47
    },
    {
      "id": "6d5c9ef8-dd77-41a7-9001-ad0d180bf3fc",
      "m1": "بزین اندر آورد و کردش دوال",
      "m2": "عقابی شده رخش با پر و بال",
      "verse_number": 48
    },
    {
      "id": "8bbae33f-58bf-4cfb-a344-f625bedb155d",
      "m1": "سوار از دلیری بیفشارد ران",
      "m2": "گران شد رکیب و سبک شد عنان",
      "verse_number": 49
    },
    {
      "id": "50a37421-a934-4c15-a837-781ded4acde5",
      "m1": "همی خواست کان خم خام کمند",
      "m2": "بنیرو ز هم بگسلاند ز بند",
      "verse_number": 50
    },
    {
      "id": "f7aa00f2-4bf0-452d-8aa7-c25bfa46a7d4",
      "m1": "شد از هوش کاموس و نگسست خام",
      "m2": "گو پیلتن رخش را کرد رام",
      "verse_number": 51
    },
    {
      "id": "c2343568-c9d2-46cd-9e8d-1b3e8f9aec62",
      "m1": "عنان را بیچید و او را ز زین",
      "m2": "نگون اندر آورد و زد بر زمین",
      "verse_number": 52
    },
    {
      "id": "0752a1ef-cea1-4bf7-9884-7794f6624fff",
      "m1": "بیامد ببستش بخم کمند",
      "m2": "بدو گفت کاکنون شدی بیگزند",
      "verse_number": 53
    },
    {
      "id": "866f564d-7c43-4455-a448-8cb7213cfe4f",
      "m1": "ز تو تنبل و جادوی دور گشت",
      "m2": "روانت بر دیو مزدور گشت",
      "verse_number": 54
    },
    {
      "id": "cda6bf20-9606-457e-811c-d5fba6303d5e",
      "m1": "سرآمد بتو بر همه روز کین",
      "m2": "نبینی زمین کشانی و چین",
      "verse_number": 55
    },
    {
      "id": "15013d2f-477d-4c53-85a0-f71f2c7d40ec",
      "m1": "گمان تو آن بد که هنگام جنگ",
      "m2": "کسی چون تو نگرفت خنجر بچنگ",
      "verse_number": 56
    },
    {
      "id": "70a5b0c9-7ffc-4b28-805e-65622fcb8854",
      "m1": "مبادا که کین آورد سرفراز",
      "m2": "که بس زود بیند نشیب و فراز",
      "verse_number": 57
    },
    {
      "id": "b4d0d54d-83b5-420b-a898-a29b516ba9c0",
      "m1": "دو دست از پس پشت بستش چو سنگ",
      "m2": "بخم کمند اندر آورد چنگ",
      "verse_number": 58
    },
    {
      "id": "6c6ea91b-7d02-4196-ac24-37aab972de19",
      "m1": "بیامد خرامان بایران سپاه",
      "m2": "بزیر کش اندر تن کینهخواه",
      "verse_number": 59
    },
    {
      "id": "a2ebd873-4fa6-4844-9711-1c42eab615ae",
      "m1": "بگردان چنین گفت کین رزمجوی",
      "m2": "ز بس زور و کین اندر آمد بروی",
      "verse_number": 60
    },
    {
      "id": "90cf030d-8ac0-4a3d-b09f-c9b3c2950bf9",
      "m1": "چنین است رسم سرای فریب",
      "m2": "گهی در فراز و گهی در نشیب",
      "verse_number": 61
    },
    {
      "id": "222014a4-d134-424a-9f24-4c8375cfdc0d",
      "m1": "بایران همی شد که ویران کند",
      "m2": "کنام پلنگان و شیران کند",
      "verse_number": 62
    },
    {
      "id": "b833b0c0-d863-43cf-81ae-18ba9d4f50ea",
      "m1": "به زابلستان و به کابلستان",
      "m2": "نه ایوان بود نیز و نه گلستان",
      "verse_number": 63
    },
    {
      "id": "6bbf87fd-77c2-42f6-8525-a391cd30cb7f",
      "m1": "نیندازد از دست گوپال را",
      "m2": "مگر گم کند رستم زال را",
      "verse_number": 64
    },
    {
      "id": "6b0f28e8-9512-43ec-a5a6-41b52b465c8f",
      "m1": "کفن شد کنون مغفر و جوشنش",
      "m2": "ز خاک افسر و گرد پیراهنش",
      "verse_number": 65
    },
    {
      "id": "67d1d668-9096-4599-a3fa-8ce3dd1667a7",
      "m1": "شما را بکشتن چگونست رای",
      "m2": "که شد کار کاموس جنگی ز پای",
      "verse_number": 66
    },
    {
      "id": "1d22cb25-3d1b-41f2-89cb-d6f069f1dccd",
      "m1": "بیفگند بر خاک پیش سران",
      "m2": "ز لشکر برفتند کنداوران",
      "verse_number": 67
    },
    {
      "id": "8fe6f2d1-d7a6-4503-a4d6-f6a29c2d718f",
      "m1": "تنش را بشمشیر کردند چاک",
      "m2": "بخون غرقه شد زیر او سنگ و خاک",
      "verse_number": 68
    },
    {
      "id": "dd0b706d-9e0d-4e94-940d-5f509d3e72d3",
      "m1": "بمردی نباید شد اندر گمان",
      "m2": "که بر تو درازست دست زمان",
      "verse_number": 69
    },
    {
      "id": "bcbcbcec-ada9-4446-ab8f-b0f6f1bc4e31",
      "m1": "بپایان شد این رزم کاموس گرد",
      "m2": "همی شد که جان آورد جان ببرد",
      "verse_number": 70
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 70
  }
}