{
  "id": "ef495de7-2c07-4256-b621-ec0d6f2b4967",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "5179f42a-4f69-4ecc-99c3-8467768f8cf5",
      "m1": "ز ترکان یکی بود بازور نام",
      "m2": "بافسوس بهر جای گسترده کام",
      "verse_number": 1
    },
    {
      "id": "638f5901-a976-4bf7-a645-13dc509b7494",
      "m1": "بیاموخته کژی و جادوی",
      "m2": "بدانسته چینی و هم پهلوی",
      "verse_number": 2
    },
    {
      "id": "8b0ff8c5-7eb8-4d71-8f6b-6c713d109d1c",
      "m1": "چنین گفت پیران بافسون پژوه",
      "m2": "کز ایدر برو تا سر تیغ کوه",
      "verse_number": 3
    },
    {
      "id": "999ed5e5-3fe7-4133-9124-a55de4bf7981",
      "m1": "یکی برف و سرما و باد دمان",
      "m2": "بریشان بیاور هم اندر زمان",
      "verse_number": 4
    },
    {
      "id": "3ef38b15-04c6-435e-8796-a107a3f65cca",
      "m1": "هوا تیرهگون بود از تیر ماه",
      "m2": "همی گشت بر کوه ابر سیاه",
      "verse_number": 5
    },
    {
      "id": "815667f9-7139-4150-bf1a-b5747ff772a2",
      "m1": "چو بازور در کوه شد در زمان",
      "m2": "برآمد یکی برف و باد دمان",
      "verse_number": 6
    },
    {
      "id": "0df8851b-ae3f-4272-b42b-97f6d7553a66",
      "m1": "همه دست آن نیزهداران ز کار",
      "m2": "فروماند از برف در کارزار",
      "verse_number": 7
    },
    {
      "id": "d75cf0d6-01cc-488b-aa96-736e973cd6e5",
      "m1": "ازان رستخیز و دم زمهریر",
      "m2": "خروش یلان بود و باران تیر",
      "verse_number": 8
    },
    {
      "id": "32bdfd64-e04d-4f5f-ab42-ce8a15f9fd7b",
      "m1": "بفرمود پیران که یکسر سپاه",
      "m2": "یکی حمله سازید زین رزمگاه",
      "verse_number": 9
    },
    {
      "id": "5d30dde0-2a48-40f3-b522-660c25d79244",
      "m1": "چو بر نیزه بر دستهاشان فسرد",
      "m2": "نیاراست بنمود کس دست برد",
      "verse_number": 10
    },
    {
      "id": "1ea1872c-cb49-449d-9d32-fb2002bf98d2",
      "m1": "وزان پس برآورد هومان غریو",
      "m2": "یکی حمله آورد برسان دیو",
      "verse_number": 11
    },
    {
      "id": "b00257e4-5888-4b8d-ae5d-50f6e330fca7",
      "m1": "بکشتند چندان ز ایران سپاه",
      "m2": "که دریای خون گشت آوردگاه",
      "verse_number": 12
    },
    {
      "id": "3f43b60f-79f1-499f-940f-6919334bd2e6",
      "m1": "در و دشت گشته پر از برف و خون",
      "m2": "سواران ایران فتاده نگون",
      "verse_number": 13
    },
    {
      "id": "4662a09d-2a0d-4cef-9825-482530372ac3",
      "m1": "ز کشته نبد جای رفتن بجنگ",
      "m2": "ز برف و ز افگنده شد جای تنگ",
      "verse_number": 14
    },
    {
      "id": "8523d393-8e50-4329-9e8f-c9c5f956e19d",
      "m1": "سیه گشت در دشت شمشیر و دست",
      "m2": "بروی اندر افتاده برسان مست",
      "verse_number": 15
    },
    {
      "id": "0222b29b-371f-4e93-b6b3-1518b84aa420",
      "m1": "نبد جای گردش دران رزمگاه",
      "m2": "شده دست لشکر ز سرما تباه",
      "verse_number": 16
    },
    {
      "id": "8607d26c-99dc-4003-8258-b0c75900ddc9",
      "m1": "سپهدار و گردنکشان آن زمان",
      "m2": "گرفتند زاری سوی آسمان",
      "verse_number": 17
    },
    {
      "id": "9097860f-c534-49dd-ba3b-5c7f9bcfd7b8",
      "m1": "که ای برتر از دانش و هوش و رای",
      "m2": "نه در جای و بر جای و نه زیر جای",
      "verse_number": 18
    },
    {
      "id": "fcc32abe-8ff1-4f5e-b0fa-ab222a348994",
      "m1": "همه بندهٔ پرگناه توایم",
      "m2": "به بیچارگی دادخواه توایم",
      "verse_number": 19
    },
    {
      "id": "6ed53ad4-6db1-4016-b147-34476b448639",
      "m1": "ز افسون و از جادوی برتری",
      "m2": "جهاندار و بر داوران داوری",
      "verse_number": 20
    },
    {
      "id": "fbbf5e02-23b1-44be-9e16-005ff4c3af6a",
      "m1": "تو باشی به بیچارگی دستگیر",
      "m2": "تواناتر از آتش و زمهریر",
      "verse_number": 21
    },
    {
      "id": "d71e7d45-5903-4052-891d-bf5d47cae2e3",
      "m1": "ازین برف و سرما تو فریادرس",
      "m2": "نداریم فریادرس جز تو کس",
      "verse_number": 22
    },
    {
      "id": "325dbec6-8b1b-4fbb-8bcd-3ad138e1a43b",
      "m1": "بیامد یکی مرد دانش پژوه",
      "m2": "برهام بنمود آن تیغ کوه",
      "verse_number": 23
    },
    {
      "id": "9a59ae39-7814-4cc6-b3a2-35e8c9d7c612",
      "m1": "کجا جای بازور نستوه بود",
      "m2": "بر افسون و تنبل بران کوه بود",
      "verse_number": 24
    },
    {
      "id": "bd40ceec-9505-4d65-9798-aeff59e625ef",
      "m1": "بجنبید رهام زان رزمگاه",
      "m2": "برون تاخت اسپ از میان سپاه",
      "verse_number": 25
    },
    {
      "id": "ec1e1c1e-126a-489e-8eab-80d2a2acb5db",
      "m1": "زره دامنش را بزد بر کمر",
      "m2": "پیاده برآمد بران کوه سر",
      "verse_number": 26
    },
    {
      "id": "301a0bf5-1d97-4cdf-8165-719fb52905d1",
      "m1": "چو جادو بدیدش بیامد بجنگ",
      "m2": "عمودی ز پولاد چینی بچنگ",
      "verse_number": 27
    },
    {
      "id": "bd2ac896-5e92-4d12-ba66-a31d4ee341c7",
      "m1": "چو رهام نزدیک جادو رسید",
      "m2": "سبک تیغ تیز از میان برکشید",
      "verse_number": 28
    },
    {
      "id": "47c5900b-5df2-4ae0-8349-935618431fed",
      "m1": "بیفگند دستش بشمشیر تیز",
      "m2": "یکی باد برخاست چون رستخیز",
      "verse_number": 29
    },
    {
      "id": "abe4b9d8-e2f0-462e-8636-34aea7df0f84",
      "m1": "ز روی هوا ابر تیره ببرد",
      "m2": "فرود آمد از کوه رهام گرد",
      "verse_number": 30
    },
    {
      "id": "57c9c535-8aa7-42bd-83e3-e207714f1438",
      "m1": "یکی دست با زور جادو بدست",
      "m2": "بهامون شد و بارگی برنشست",
      "verse_number": 31
    },
    {
      "id": "cdbea982-86af-4da9-b067-45251f320bf7",
      "m1": "هوا گشت زان سان که از پیش بود",
      "m2": "فروزنده خورشید را رخ نمود",
      "verse_number": 32
    },
    {
      "id": "0dacd4a4-524d-4b9d-9c0d-63e52d650a53",
      "m1": "پدر را بگفت آنچ جادو چه کرد",
      "m2": "چه آورد بر ما بروز نبرد",
      "verse_number": 33
    },
    {
      "id": "dc9e1fa5-865d-4db5-adb3-60596c94bc6f",
      "m1": "بدیدند ازان پس دلیران شاه",
      "m2": "چو دریای خون گشته آوردگاه",
      "verse_number": 34
    },
    {
      "id": "791a0e25-08be-4e0c-9558-2d6f1fd31342",
      "m1": "همه دشت کشته ز ایرانیان",
      "m2": "تن بیسران سر بیتنان",
      "verse_number": 35
    },
    {
      "id": "e9174909-98e1-457a-8456-cd8bdbd8f382",
      "m1": "چنین گفت گودز آنگه بطوس",
      "m2": "که نه پیل ماند و نه آوای کوس",
      "verse_number": 36
    },
    {
      "id": "1fdfd3bb-e67b-46bb-8d92-c06b7269a7b7",
      "m1": "همه یکسره تیغها برکشیم",
      "m2": "براریم جوش ار کشند ار کشیم",
      "verse_number": 37
    },
    {
      "id": "dab7d37a-f415-43a5-a8fb-b3f5df7d7a8d",
      "m1": "همانا که ما را سر آمد زمان",
      "m2": "نه روز نبردست و تیر و کمان",
      "verse_number": 38
    },
    {
      "id": "5865bacb-612c-4d4f-9dd5-052d842c19ed",
      "m1": "بدو گفت طوس ای جهاندیده مرد",
      "m2": "هوا گشت پاک و بشد باد سرد",
      "verse_number": 39
    },
    {
      "id": "91284502-befa-4c8e-a215-d2e21f1d6f47",
      "m1": "چرا سر همی داد باید بباد",
      "m2": "چو فریادرس فره و زور داد",
      "verse_number": 40
    },
    {
      "id": "dfa61428-af74-45ff-9a14-2bd930486d57",
      "m1": "مکن پیشدستی تو در جنگ ما",
      "m2": "کنند این دلیران خود اهنگ ما",
      "verse_number": 41
    },
    {
      "id": "28b9d0f7-eb79-4098-8e91-861f1aeb80d2",
      "m1": "بپیش زمانه پذیره مشو",
      "m2": "بنزدیک بدخواه خیره مشو",
      "verse_number": 42
    },
    {
      "id": "643796de-1b97-4491-95ce-4e0ff19c888b",
      "m1": "تو در قلب با کاویانی درفش",
      "m2": "همی دار در چنگ تیغ بنفش",
      "verse_number": 43
    },
    {
      "id": "e666003f-353c-449a-9707-1fe571834e49",
      "m1": "سوی میمنه گیو و بیژن بهم",
      "m2": "نگهبانش بر میسره گستهم",
      "verse_number": 44
    },
    {
      "id": "2b27a9ca-3fde-474b-8942-a61661b7b844",
      "m1": "چو رهام و شیدوش بر پیش صف",
      "m2": "گرازه بکین برلب آورده کف",
      "verse_number": 45
    },
    {
      "id": "6f6423f1-9250-43a8-95f8-c5466ee61650",
      "m1": "شوم برکشم گرز کین از میان",
      "m2": "کنم تن فدی پیش ایرانیان",
      "verse_number": 46
    },
    {
      "id": "50dec376-22c3-4a03-9dce-47ccd70f7560",
      "m1": "ازین رزمگه برنگردانم اسپ",
      "m2": "مگر خاک جایم بود چون زرسپ",
      "verse_number": 47
    },
    {
      "id": "cd810603-ae90-44d2-ad5b-f946945eda32",
      "m1": "اگر من شوم کشته زین رزمگاه",
      "m2": "تو برکش سوی شاه ایران سپاه",
      "verse_number": 48
    },
    {
      "id": "cd59f02a-d4d0-4371-ae62-5f4037048ca9",
      "m1": "مرا مرگ نامیتر از سرزنش",
      "m2": "بهر جای بیغارهٔ بدکنش",
      "verse_number": 49
    },
    {
      "id": "5122d45d-7f23-4853-a917-85bacaf8030c",
      "m1": "چنین است گیتی پرآزار و درد",
      "m2": "ازو تا توان گرد بیشی مگرد",
      "verse_number": 50
    },
    {
      "id": "e2bbc927-d7cb-4e00-aeea-bee46c6f4aae",
      "m1": "فزونیش یک روز بگزایدت",
      "m2": "ببودن زمانی نیفزایدت",
      "verse_number": 51
    },
    {
      "id": "e54bc9c8-abcc-4230-90a0-0081febb38a1",
      "m1": "دگر باره بر شد دم کرنای",
      "m2": "خروشیدن زنگ و هندی درای",
      "verse_number": 52
    },
    {
      "id": "5e9bbc6a-bae0-41fd-939e-72a5aee544fc",
      "m1": "ز بانگ سواران پرخاشخر",
      "m2": "درخشیدن تیغ و زخم تبر",
      "verse_number": 53
    },
    {
      "id": "ae70c2a2-2d3e-455f-a449-c1ca8acf2e1c",
      "m1": "ز پیکان و از گرز و ژوپین و تیر",
      "m2": "زمین شد بکردار دریای قیر",
      "verse_number": 54
    },
    {
      "id": "5e64a638-46a9-4f2c-851e-32dd94d3db63",
      "m1": "همه دشت بیتن سر و یال بود",
      "m2": "همه گوش پر زخم گوپال بود",
      "verse_number": 55
    },
    {
      "id": "a6558f74-9cae-4344-a329-d93ddccd8927",
      "m1": "چو شد رزم ترکان برین گونه سخت",
      "m2": "ندیدند ایرانیان روی بخت",
      "verse_number": 56
    },
    {
      "id": "7f53cfe8-ff6f-41ab-b8aa-c3a822d8e6c4",
      "m1": "همی تیره شد روی اختر درشت",
      "m2": "دلیران بدشمن نمودند پشت",
      "verse_number": 57
    },
    {
      "id": "5d24334e-12e7-4856-ac61-be53a3122c15",
      "m1": "چو طوس و چو گودرز و گیو دلیر",
      "m2": "چو شیدوش و بیژن چو رهام شیر",
      "verse_number": 58
    },
    {
      "id": "1817de92-526c-416d-b356-4d5c4c2687f5",
      "m1": "همه برنهادند جان را بکف",
      "m2": "همه رزم جستند بر پیش صف",
      "verse_number": 59
    },
    {
      "id": "c9071d54-a8b6-4115-9847-1d2820ee8ec3",
      "m1": "هرآنکس که با طوس در جنگ بود",
      "m2": "همه نامدار و کنارنگ بود",
      "verse_number": 60
    },
    {
      "id": "e01c45ab-5b8a-439e-b4d9-a455f5f6699e",
      "m1": "بپیش اندرون خون همی ریختند",
      "m2": "یلان از پس پشت بگریختند",
      "verse_number": 61
    },
    {
      "id": "b2328333-3656-44d4-b81b-5665bfc9cb61",
      "m1": "یکی موبدی طوس یل را بخواند",
      "m2": "پس پشت تو گفت جنگی نماند",
      "verse_number": 62
    },
    {
      "id": "b2dd6c77-3f0f-4850-9185-bfc70ddaac0d",
      "m1": "نباید کت اندر میان آورند",
      "m2": "بجان سپهبد زیان آورند",
      "verse_number": 63
    },
    {
      "id": "05f9c274-4852-4035-8d66-7c3ef7236e60",
      "m1": "به گیو دلیر آن زمان طوس گفت",
      "m2": "که با مغز لشکر خرد نیست جفت",
      "verse_number": 64
    },
    {
      "id": "271a5059-50d5-479c-a7a0-935d249cf458",
      "m1": "که ما را بدین گونه بگذاشتند",
      "m2": "چنین روی از جنگ برگاشتند",
      "verse_number": 65
    },
    {
      "id": "9010c1f4-2960-4f5e-959e-c5dfc4541f01",
      "m1": "برو بازگردان سپه را ز راه",
      "m2": "ز بیغارهٔ دشمن و شرم شاه",
      "verse_number": 66
    },
    {
      "id": "d0ae71ae-b8f7-4f47-bca8-da179dca8e64",
      "m1": "بشد گیو و لشکر همه بازگشت",
      "m2": "پر از کشته دیدند هامون و دشت",
      "verse_number": 67
    },
    {
      "id": "9e5d7ded-31d9-48a4-a3cf-ef0ae9e7f1c0",
      "m1": "سپهبد چنین گفت با مهتران",
      "m2": "که اینست پیکار جنگآوران",
      "verse_number": 68
    },
    {
      "id": "4a084e17-fd8e-4071-835c-2102a508dfa3",
      "m1": "کنون چون رخ روز شد تیرهگون",
      "m2": "همه روی کشور چو دریای خون",
      "verse_number": 69
    },
    {
      "id": "fb0fdff9-d4ae-4c36-9c47-f2b3a2f597ed",
      "m1": "یکی جای آرام باید گزید",
      "m2": "اگر تیره شب خود توان آرمید",
      "verse_number": 70
    },
    {
      "id": "7d123ce7-f074-4087-8711-d7499de6ff8a",
      "m1": "مگر کشته یابد بجای مغاک",
      "m2": "یکی بستر از ریگ و چادر ز خاک",
      "verse_number": 71
    },
    {
      "id": "4c20f653-d7a3-4266-834d-971eb789db45",
      "m1": "همه بازگشتند یکسر ز جنگ",
      "m2": "ز خویشان روان خسته و سر ز ننگ",
      "verse_number": 72
    },
    {
      "id": "224cfc2d-bcf1-49b5-bff0-267d14f34ff9",
      "m1": "سر از کوه برزد همانگاه ماه",
      "m2": "چو بر تخت پیروزه پیروز شاه",
      "verse_number": 73
    },
    {
      "id": "0b2a5ee5-119b-48f5-810c-5b11a90f54de",
      "m1": "سپهدار پیران سپه را بخواند",
      "m2": "همی گفت زیشان فراوان نماند",
      "verse_number": 74
    },
    {
      "id": "34b44b7c-ce1a-4878-a4f1-cc3849d824a1",
      "m1": "بدانگه که دریای یاقوت زرد",
      "m2": "زند موج بر کشور لاژورد",
      "verse_number": 75
    },
    {
      "id": "3224e1b0-3a28-4397-8377-d1658af2468d",
      "m1": "کسی را که زندهست بیجان کنیم",
      "m2": "بریشان دل شاه پیچان کنیم",
      "verse_number": 76
    },
    {
      "id": "4102e5bd-190a-4089-8eb2-9a251bf72533",
      "m1": "برفتند با شادمانی زجای",
      "m2": "نشستند بر پیش پردهسرای",
      "verse_number": 77
    },
    {
      "id": "a12a4042-de8b-4b33-965c-03d57f412b53",
      "m1": "همه شب ز آوای چنگ و رباب",
      "m2": "سپه را نیامد بران دشت خواب",
      "verse_number": 78
    },
    {
      "id": "ff582880-5237-4243-9411-0299b422a7f5",
      "m1": "وزین روی لشکر همه مستمند",
      "m2": "پدر بر پسر سوگوار و نژند",
      "verse_number": 79
    },
    {
      "id": "61610b4c-f240-4caf-b2f5-514a54e684e0",
      "m1": "همه دشت پر کشته و خسته بود",
      "m2": "بخون بزرگان زمین شسته بود",
      "verse_number": 80
    },
    {
      "id": "1ec72364-c3aa-4d92-b7c9-1f0b14a13f76",
      "m1": "چپ و راست آوردگه دست و پای",
      "m2": "نهادن ندانست کس پا بجای",
      "verse_number": 81
    },
    {
      "id": "328d8c0a-44c7-4fe5-af91-edd8727e6cd8",
      "m1": "همه شب همی خسته برداشتند",
      "m2": "چو بیگانه بد خوار بگذاشتند",
      "verse_number": 82
    },
    {
      "id": "1b83cb1c-1081-47fd-bc93-ec1f700717a6",
      "m1": "بر خسته آتش همی سوختند",
      "m2": "گسسته ببستند و بردوختند",
      "verse_number": 83
    },
    {
      "id": "f5d55ea8-5c6d-45fd-83a1-173625534daf",
      "m1": "فراوان ز گودرزیان خسته بود",
      "m2": "بسی کشته بود و بسی بسته بود",
      "verse_number": 84
    },
    {
      "id": "0ad41628-f67e-44a6-b4fa-c672a356b16b",
      "m1": "چو بشنید گودرز برزد خروش",
      "m2": "زمین آمد از بانگ اسپان بجوش",
      "verse_number": 85
    },
    {
      "id": "fba2609d-5a6e-4db2-9601-7a74a334e6a8",
      "m1": "همه مهتران جامه کردند چاک",
      "m2": "بسربر پراگند گودرز خاک",
      "verse_number": 86
    },
    {
      "id": "08521752-c938-4f98-a79b-5887ad31e009",
      "m1": "همی گفت کاندر جهان کس ندید",
      "m2": "به پیران سر این بد که بر من رسید",
      "verse_number": 87
    },
    {
      "id": "18bb6167-e29a-443f-a490-bebc76f8bfa3",
      "m1": "چرا بایدم زنده با پیر سر",
      "m2": "بخاک اندر افگنده چندین پسر",
      "verse_number": 88
    },
    {
      "id": "2f8b2d9c-5c55-4879-bd18-ce5156171758",
      "m1": "ازان روزگاری کجا زادهام",
      "m2": "ز خفتان میان هیچ نگشادهام",
      "verse_number": 89
    },
    {
      "id": "f8453da2-5c49-4891-b426-e57df4ec0e1e",
      "m1": "بفرجام چندین پسر ز انجمن",
      "m2": "ببینم چنین کشته در پیش من",
      "verse_number": 90
    },
    {
      "id": "eaa0632c-284c-44af-8360-60dfc311a558",
      "m1": "جدا گشته از من چو بهرام پور",
      "m2": "چنان نامور شیر خودکام پور",
      "verse_number": 91
    },
    {
      "id": "17f459c2-104b-4710-9256-1b0f99093ce8",
      "m1": "ز گودرز چون آگهی شد بطوس",
      "m2": "مژه کرد پر خون و رخ سندروس",
      "verse_number": 92
    },
    {
      "id": "6ac567e1-84cd-4325-948b-f7e63f837c1b",
      "m1": "خروشی براورد آنگه بزار",
      "m2": "فراوان ببارید خون در کنار",
      "verse_number": 93
    },
    {
      "id": "24551730-b9c8-4900-a772-2ef0118cea05",
      "m1": "همی گفت اگر نوذر پاکتن",
      "m2": "نکشتی بن و بیخ من بر چمن",
      "verse_number": 94
    },
    {
      "id": "142993e7-b9b3-4288-a347-217fd498ff32",
      "m1": "نبودی مرا رنج و تیمار و درد",
      "m2": "غم کشته و گرم دشت نبرد",
      "verse_number": 95
    },
    {
      "id": "fd14dbaf-6a58-423c-9a01-5a734a53407d",
      "m1": "که تا من کمر بر میان بستهام",
      "m2": "بدل خستهام گر بجان رستهام",
      "verse_number": 96
    },
    {
      "id": "04d87a8a-4542-41be-8123-f5e264d9bb0c",
      "m1": "هماکنون تن کشتگان را بخاک",
      "m2": "بپوشید جایی که باشد مغاک",
      "verse_number": 97
    },
    {
      "id": "d3a3ed2b-ca6b-4762-8225-170b010e3e09",
      "m1": "سران بریده سوی تن برید",
      "m2": "بنه سوی کوه هماون برید",
      "verse_number": 98
    },
    {
      "id": "9b661253-c5cd-4dff-8eaf-39095878f379",
      "m1": "برانیم لشکر همه همگروه",
      "m2": "سراپرده و خیمه بر سوی کوه",
      "verse_number": 99
    },
    {
      "id": "bb33bb62-611f-4138-9e24-6085640d2a20",
      "m1": "هیونی فرستیم نزدیک شاه",
      "m2": "دلش برفروزد فرستد سپاه",
      "verse_number": 100
    },
    {
      "id": "929bbbb9-db28-4d59-80d1-f1951189d184",
      "m1": "بدین من سواری فرستادهام",
      "m2": "ورا پیش ازین آگهی دادهام",
      "verse_number": 101
    },
    {
      "id": "48f1e718-5044-4a7c-8929-c591d1c8f645",
      "m1": "مگر رستم زال را با سپاه",
      "m2": "سوی ما فرستد بدین رزمگاه",
      "verse_number": 102
    },
    {
      "id": "8e4bc8f6-f437-4b53-ba54-f1adc2dc5279",
      "m1": "وگرنه ز ما نامداری دلیر",
      "m2": "نماند به آوردگه بر چو شیر",
      "verse_number": 103
    }
  ],
