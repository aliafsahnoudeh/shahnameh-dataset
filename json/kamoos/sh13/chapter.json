{
  "id": "644a9762-c633-4ee3-8e43-9a30988cd321",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "887565fc-960e-448b-9848-ca56caaf1499",
      "m1": "چو خورشید بر گنبد لاژورد",
      "m2": "سراپردهای زد ز دیبای زرد",
      "verse_number": 1
    },
    {
      "id": "957a5ef6-743e-4799-a87c-b79a26c76eaa",
      "m1": "خروشی بلند آمد از دیدهگاه",
      "m2": "بگودرز کای پهلوان سپاه",
      "verse_number": 2
    },
    {
      "id": "d3539ce2-7f38-400f-af34-cbec1b55b2b3",
      "m1": "سپاه آمد و راه نزدیک شد",
      "m2": "ز گرد سپه روز تاریک شد",
      "verse_number": 3
    },
    {
      "id": "17cd31ca-c1a8-43dd-a15f-13c2c7423486",
      "m1": "بجنبید گودرز از جای خویش",
      "m2": "بیاورد پوینده بالای خویش",
      "verse_number": 4
    },
    {
      "id": "d4e52010-eea1-477c-a08c-4b1bcb453fd1",
      "m1": "سوی گرد تاریک بنهاد روی",
      "m2": "همی شد خلیده دل و راهجوی",
      "verse_number": 5
    },
    {
      "id": "77b33e24-d160-41c2-a46d-af7411872690",
      "m1": "بیامد چو نزدیک ایشان رسید",
      "m2": "درفش فریبرز کاوس دید",
      "verse_number": 6
    },
    {
      "id": "a3a82dd5-31db-41dd-a112-2a3cef90d156",
      "m1": "که او بد بایران سپه پیشرو",
      "m2": "پسندیده و خویش سالار نو",
      "verse_number": 7
    },
    {
      "id": "595aae5f-134d-4a2c-b050-231e412efa17",
      "m1": "پیاده شد از اسپ گودرز پیر",
      "m2": "همان لشکر افروز دانشپذیر",
      "verse_number": 8
    },
    {
      "id": "e373e9bd-04e5-4036-b702-df748cf5f696",
      "m1": "گرفتند مر یکدگر را کنار",
      "m2": "خروشی برآمد ز هر دو بزار",
      "verse_number": 9
    },
    {
      "id": "76f2a974-d5be-4ef5-8d5a-42bf11218371",
      "m1": "فریبرز گفت ای سپهدار پیر",
      "m2": "همیشه بجنگ اندری ناگزیر",
      "verse_number": 10
    },
    {
      "id": "26a98118-32c8-43f0-acae-3bf515c63c9e",
      "m1": "ز کین سیاوش تو داری زیان",
      "m2": "دریغا سواران گودرزیان",
      "verse_number": 11
    },
    {
      "id": "3744801a-7848-4676-94ac-f400aae78e76",
      "m1": "ازیشان ترا مزد بسیار باد",
      "m2": "سر بخت دشمن نگونسار باد",
      "verse_number": 12
    },
    {
      "id": "2b28627b-e0af-444d-8acb-97df93f756d0",
      "m1": "سپاس از خداوند خورشید و ماه",
      "m2": "که دیدم ترا زنده بر جایگاه",
      "verse_number": 13
    },
    {
      "id": "31f7080c-9efc-4166-9ab2-ab486d5881c3",
      "m1": "ازیشان ببارید گودرز خون",
      "m2": "که بودند کشته بخاک اندرون",
      "verse_number": 14
    },
    {
      "id": "c4d8b587-5c79-4bf7-8b33-dc74eed33919",
      "m1": "بدو گفت بنگر که از بخت بد",
      "m2": "همی بر سرم هر زمان بد رسد",
      "verse_number": 15
    },
    {
      "id": "b27b4452-bf7a-4e8f-b441-47ca05569c08",
      "m1": "درین جنگ پور و نبیره نماند",
      "m2": "سپاه و درفش و تبیره نماند",
      "verse_number": 16
    },
    {
      "id": "834c070e-4e93-44e9-bada-4e4f26a9d6a1",
      "m1": "فرامش شدم کار آن کارزار",
      "m2": "کنونست رزم و کنونست کار",
      "verse_number": 17
    },
    {
      "id": "2511b7c9-0d40-431d-89bf-4efa0ace0cf4",
      "m1": "سپاهست چندان برین دشت و راغ",
      "m2": "که روی زمین گشت چون پر زاغ",
      "verse_number": 18
    },
    {
      "id": "434bdd5f-86f2-4406-ba01-476523ca6575",
      "m1": "همه لشکر طوس با این سپاه",
      "m2": "چو تیره شبانست با نور ماه",
      "verse_number": 19
    },
    {
      "id": "477386f8-2120-46be-829f-892464a7ac2b",
      "m1": "ز چین و ز سقلاب وز هند و روم",
      "m2": "ز ویران گیتی و آباد بوم",
      "verse_number": 20
    },
    {
      "id": "0451fa0e-201c-47ee-8c90-184890e12e4c",
      "m1": "همانا نماندست یک جانور",
      "m2": "مگر بسته بر جنگ ما بر کمر",
      "verse_number": 21
    },
    {
      "id": "a170700e-920c-41c9-b847-4d583b81afc8",
      "m1": "کنون تا نگویی که رستم کجاست",
      "m2": "ز غمها نگردد مرا پشت راست",
      "verse_number": 22
    },
    {
      "id": "171ccc7d-37f6-4dc9-87c1-c7b0aec04cc6",
      "m1": "فریبرز گفت از پس من ز جای",
      "m2": "بیامد نبودش جز از رزم رای",
      "verse_number": 23
    },
    {
      "id": "1e8458b1-0b2b-4408-8aa1-b9fdf337a1d2",
      "m1": "شب تیره را تا سپیده دمان",
      "m2": "بیاید بره بر نجوید زمان",
      "verse_number": 24
    },
    {
      "id": "0c35d68c-652d-4dec-aa4a-2d95382ec975",
      "m1": "کنون من کجا گیرم آرامگاه",
      "m2": "کجا رانم این خوار مایه سپاه",
      "verse_number": 25
    },
    {
      "id": "70ec837d-fb93-46ce-83bb-8de363ef8843",
      "m1": "بدو گفت گودرز رستم چه گفت",
      "m2": "که گفتار او را نشاید نهفت",
      "verse_number": 26
    },
    {
      "id": "5a8a52a4-6e5b-43a8-8d1f-bf90bb4e83f1",
      "m1": "فریبرز گفت ای جهاندیده مرد",
      "m2": "تهمتن نفرمود ما را نبرد",
      "verse_number": 27
    },
    {
      "id": "52a6ba41-32cc-4bb3-b6e2-4143f7184e0a",
      "m1": "بباشید گفت اندران رزمگاه",
      "m2": "نباید شدن پیش روی سپاه",
      "verse_number": 28
    },
    {
      "id": "c3bad459-f96e-4078-be01-b3c52ddcf089",
      "m1": "بباید بدان رزمگاه آرمید",
      "m2": "یکی تا درفش من آید پدید",
      "verse_number": 29
    },
    {
      "id": "0981f6ce-5eb6-4bf4-80e4-59bbf5fadb5d",
      "m1": "برفت او و گودرز با او برفت",
      "m2": "براه هماون خرامید تفت",
      "verse_number": 30
    },
    {
      "id": "5db8c2cd-204f-4a30-8e87-20992875abfb",
      "m1": "چو لشکر پدید آمد از دیدهگاه",
      "m2": "بشد دیدهبان پیش توران سپاه",
      "verse_number": 31
    },
    {
      "id": "7b2c66c4-7f3e-43de-8424-0223ade9174d",
      "m1": "کز ایران یکی لشکر آمد بدشت",
      "m2": "ازان روی سوی هماون گذشت",
      "verse_number": 32
    },
    {
      "id": "5defc168-61fc-432c-aab0-a2dede1b9b8f",
      "m1": "سپهبد بشد پیش خاقان چین",
      "m2": "که آمد سپاهی ز ایران زمین",
      "verse_number": 33
    },
    {
      "id": "b42a3b51-9dd5-4996-93c7-a79a1b05a8f5",
      "m1": "ندانیم چندست و سالار کیست",
      "m2": "چه سازیم و درمان این کار چیست",
      "verse_number": 34
    },
    {
      "id": "0f127c09-e9c3-4ea1-b18d-eb44adf4b078",
      "m1": "بدو گفت کاموس رزم آزمای",
      "m2": "بجایی که مهتر تو باشی بپای",
      "verse_number": 35
    },
    {
      "id": "d4895bb9-8e66-4b7a-87c8-55a5876d3182",
      "m1": "بزرگان درگاه افراسیاب",
      "m2": "سپاهی بکردار دریای آب",
      "verse_number": 36
    },
    {
      "id": "6faf01cc-eb9d-4401-8ee0-0e26bf25ce26",
      "m1": "تو دانی چه کردی بدین پنج ماه",
      "m2": "برین دشت با خوار مایه سپاه",
      "verse_number": 37
    },
    {
      "id": "8645f075-aee6-48e5-86ab-6481b8997082",
      "m1": "کنون چون زمین سربسر لشکرست",
      "m2": "چو خاقان و منشور کنداورست",
      "verse_number": 38
    },
    {
      "id": "65d966fd-c5ae-4dd4-8d82-9ed3e45885ab",
      "m1": "بمان تا هنرها پدید آوریم",
      "m2": "تو در بستی و ما کلید آوریم",
      "verse_number": 39
    },
    {
      "id": "40820813-1b73-4030-ab0a-dfbd973cf5c1",
      "m1": "گر از کابل و زابل و مای و هند",
      "m2": "شود روی گیتی چو رومی پرند",
      "verse_number": 40
    },
    {
      "id": "bb3384fe-0030-44db-9469-f2b67f97e1d8",
      "m1": "همانا به تنها تن من نیند",
      "m2": "نگویی که ایرانیان خود کیند",
      "verse_number": 41
    },
    {
      "id": "533504a6-a974-4ceb-8abc-8d136ac741b2",
      "m1": "تو ترسانی از رستم نامدار",
      "m2": "نخستین ازو من برآرم دمار",
      "verse_number": 42
    },
    {
      "id": "889e5666-4007-4ac5-a9da-0990573dd3f0",
      "m1": "گرش یک زمان اندر آرم بدام",
      "m2": "نمانم که ماند بگیتیش نام",
      "verse_number": 43
    },
    {
      "id": "733f064d-f374-4884-9bbf-7aa1232204bc",
      "m1": "تو از لشکر سیستان خستهای",
      "m2": "دل خویش در جنگشان بستهای",
      "verse_number": 44
    },
    {
      "id": "c5f8acdc-0007-4404-9685-b0dbaa4ee92b",
      "m1": "یکی بار دست من اندر نبرد",
      "m2": "نگه کن که برخیزد از دشت گرد",
      "verse_number": 45
    },
    {
      "id": "06a9ccbc-f693-4d95-90ae-04aaa3903659",
      "m1": "بدانی که اندر جهان مرد کیست",
      "m2": "دلیران کدامند و پیکار چیست",
      "verse_number": 46
    },
    {
      "id": "10e70934-68ca-45d9-bb48-17f1a0b89803",
      "m1": "بدو گفت پیران کانوشه بدی",
      "m2": "همیشه ز تو دور دست بدی",
      "verse_number": 47
    },
    {
      "id": "33c41ae4-57f5-4822-854f-c16be6ec4868",
      "m1": "بپیران چنین گفت خاقان چین",
      "m2": "که کاموس را راه دادی بکین",
      "verse_number": 48
    },
    {
      "id": "81bb9dc8-5fbd-4c46-a435-c4f6e35fce47",
      "m1": "بکردار پیش آورد هرچ گفت",
      "m2": "که با کوه یارست و با پیل جفت",
      "verse_number": 49
    },
    {
      "id": "a5f3c444-70db-4d41-9c46-533f2bce0020",
      "m1": "از ایرانیان نیست چندین سخن",
      "m2": "دل جنگجویان چنین بد مکن",
      "verse_number": 50
    },
    {
      "id": "402dd7e7-0e26-4b99-8baa-7359c2cb2ad0",
      "m1": "بایران نمانیم یک سرفراز",
      "m2": "برآریم گرد از نشیب و فراز",
      "verse_number": 51
    },
    {
      "id": "4c19088e-5b97-415d-b934-f4c617ffc949",
      "m1": "هرانکس که هستند با جاه و آب",
      "m2": "فرستیم نزدیک افراسیاب",
      "verse_number": 52
    },
    {
      "id": "f4b3c51e-0308-4f71-9e6c-50d292c0ec7b",
      "m1": "همه پای کرده به بندگران",
      "m2": "وزیشان فگنده فراوان سران",
      "verse_number": 53
    },
    {
      "id": "ba184f81-87c7-4fd9-8287-98c89efa521b",
      "m1": "بایران نمانیم برگ درخت",
      "m2": "نه گاه و نه شاه و نه تاج و نه تخت",
      "verse_number": 54
    },
    {
      "id": "141791c6-703e-4874-bca0-ce70c78bd606",
      "m1": "بخندید پیران و کرد آفرین",
      "m2": "بران نامداران و خاقان چین",
      "verse_number": 55
    },
    {
      "id": "228a8b4c-db11-4da6-bc2b-6e00a86d4c43",
      "m1": "بلشکر گه آمد دلی شادمان",
      "m2": "برفتند ترکان هم اندر زمان",
      "verse_number": 56
    },
    {
      "id": "231f55c3-91ff-475e-9731-da650875ea47",
      "m1": "چو هومان و لهاک و فرشیدورد",
      "m2": "بزرگان و شیران روز نبرد",
      "verse_number": 57
    },
    {
      "id": "fae75bac-94c7-475b-b75c-9a3dcd201439",
      "m1": "بگفتند کامد ز ایران سپاه",
      "m2": "یکی پیش رو با درفشی سیاه",
      "verse_number": 58
    },
    {
      "id": "ecc80439-3585-4eed-9a31-f19d9b81938b",
      "m1": "ز کارآگهان نامداری دمان",
      "m2": "برفت و بیامد هم اندر زمان",
      "verse_number": 59
    },
    {
      "id": "e7f774bd-1410-4db0-9470-cfb0897bc2cb",
      "m1": "فریبرز کاوس گفتند هست",
      "m2": "سپاهی سرافراز و خسروپرست",
      "verse_number": 60
    },
    {
      "id": "d5accee4-c12b-44ed-804b-989ea102633f",
      "m1": "چو رستم نباشد ازو باک نیست",
      "m2": "دم او برین زهر تریاک نیست",
      "verse_number": 61
    },
    {
      "id": "bc1e633c-c931-4582-bae8-13519d02a354",
      "m1": "ابا آنک کاموس روز نبرد",
      "m2": "همی پیلتن را ندارد بمرد",
      "verse_number": 62
    },
    {
      "id": "36fd2603-8e21-483a-8613-07df60cea310",
      "m1": "مبادا که او آید ایدر بجنگ",
      "m2": "وگر چند کاموس گردد نهنگ",
      "verse_number": 63
    },
    {
      "id": "5b8c996c-2448-458a-81c2-0b8f14b4e56d",
      "m1": "نه رستم نه از سیستان لشکرست",
      "m2": "فریبرز را خاک و خون ایدرست",
      "verse_number": 64
    },
    {
      "id": "7489218a-3783-4469-a800-f130236b1267",
      "m1": "چنین گفت پیران که از تخت و گاه",
      "m2": "شدم سیر و بیزارم از هور و ماه",
      "verse_number": 65
    },
    {
      "id": "a78d5236-568b-4694-ad45-3ffcbc287d47",
      "m1": "که چون من شنیدم کز ایران سپاه",
      "m2": "خرامید و آمد بدین رزمگاه",
      "verse_number": 66
    },
    {
      "id": "47726cb0-f03d-44e5-9f29-423e73a6db11",
      "m1": "بشد جان و مغز سرم پر ز درد",
      "m2": "برآمد یکی از دلم باد سرد",
      "verse_number": 67
    },
    {
      "id": "12e80a46-217c-464f-a36f-6de7f706b1da",
      "m1": "بدو گفت کلباد کین درد چیست",
      "m2": "چرا باید از طوس و رستم گریست",
      "verse_number": 68
    },
    {
      "id": "42025c21-dcc6-4fff-ae1a-319df2a1a7ca",
      "m1": "ز بس گرز و شمشیر و پیل و سپاه",
      "m2": "میان اندرون باد را نیست راه",
      "verse_number": 69
    },
    {
      "id": "44e1bba2-dd15-4b88-8e4b-f63d2cb16134",
      "m1": "چه ایرانیان پیش ما در چه خاک",
      "m2": "ز کیخسرو و طوس و رستم چه باک",
      "verse_number": 70
    },
    {
      "id": "d454dd78-d976-418d-9d94-4b4e1dd647a8",
      "m1": "پراگنده گشتند ازان جایگاه",
      "m2": "سوی خیمهٔ خویش کردند راه",
      "verse_number": 71
    },
    {
      "id": "18aa3441-eeb7-4528-ac4b-b9b017943edf",
      "m1": "ازان پس چو آگاهی آمد به طوس",
      "m2": "که شد روی کشور پر آوای کوس",
      "verse_number": 72
    },
    {
      "id": "419bb8bb-79f4-4b8a-8ec6-2d5b85af5340",
      "m1": "از ایران بیامد گو پیلتن",
      "m2": "فریبرز کاوس و آن انجمن",
      "verse_number": 73
    },
    {
      "id": "87836eb0-6f79-42f9-8f36-7476ff2c9b1e",
      "m1": "بفرمود تا برکشیدند کوس",
      "m2": "ز گرد سپه کوه گشت آبنوس",
      "verse_number": 74
    },
    {
      "id": "9f1a2ce2-669b-40ed-8d37-d69e1842585e",
      "m1": "ز کوه هماون برآمد خروش",
      "m2": "زمین آمد از بانگ اسپان بجوش",
      "verse_number": 75
    },
    {
      "id": "36e806da-8b6b-48c4-ab61-c188d9bfda86",
      "m1": "سپهبد بریشان زبان برگشاد",
      "m2": "ز مازندران کرد بسیار یاد",
      "verse_number": 76
    },
    {
      "id": "e7f280d3-5ee6-450f-8c08-2b40b6c23016",
      "m1": "که با دیو در جنگ رستم چه کرد",
      "m2": "بریشان چه آورد روز نبرد",
      "verse_number": 77
    },
    {
      "id": "3d36a5aa-6c0c-4afa-90e7-49e198b904f0",
      "m1": "سپاه آفرین خواند بر پهلوان",
      "m2": "که بیدار دل باش و روشنروان",
      "verse_number": 78
    },
    {
      "id": "de32d848-19b5-4318-b1df-8cead97025fb",
      "m1": "بدین مژده گر دیدهخواهی رواست",
      "m2": "که این مژده آرایش جان ماست",
      "verse_number": 79
    },
    {
      "id": "1ab1f930-45e0-424d-aa2b-ce7c7656e3dc",
      "m1": "کنون چون تهمتن بیامد بجنگ",
      "m2": "ندارند پا این سپه با نهنگ",
      "verse_number": 80
    },
    {
      "id": "a246c08c-caea-40a5-b510-08918ab3001c",
      "m1": "یکایک بران گونه رزمی کنیم",
      "m2": "که این ننگ از ایرانیان بفگنیم",
      "verse_number": 81
    },
    {
      "id": "37ce10b1-888e-4139-9ea6-27168c374072",
      "m1": "درفش سرافراز خاقان و تاج",
      "m2": "سپرهای زرین و آن تخت عاج",
      "verse_number": 82
    },
    {
      "id": "4071255e-367b-4c20-bb44-8c92ab5fcee5",
      "m1": "همان افسر پیلبانان بزر",
      "m2": "سنانهای زرین و زرین کمر",
      "verse_number": 83
    },
    {
      "id": "bbf38d20-66e6-467b-89dc-eba3c8f73d79",
      "m1": "همان زنگ زرین و زرین جرس",
      "m2": "که اندر جهان آن ندیدست کس",
      "verse_number": 84
    },
    {
      "id": "7f408af0-0ceb-4577-83a2-384f321d4c83",
      "m1": "همان چتر کز دم طاوس نر",
      "m2": "برو بافتستند چندان گهر",
      "verse_number": 85
    },
    {
      "id": "a87da8e6-c7e3-4f78-9804-5c3983855bf5",
      "m1": "جزین نیز چندی بچنگ آوریم",
      "m2": "چو جان را بکوشیم و جنگ آوریم",
      "verse_number": 86
    },
    {
      "id": "8cbc39e7-9100-4922-9ced-2dd22c725b88",
      "m1": "بلشکر چنین گفت بیدار طوس",
      "m2": "که هم با هراسیم و هم با فسوس",
      "verse_number": 87
    },
    {
      "id": "eea1fc11-7314-42ba-8edf-36276fa65c89",
      "m1": "همه دامن کوه پر لشکرست",
      "m2": "سر نامداران ببند اندرست",
      "verse_number": 88
    },
    {
      "id": "a1d75922-89ef-4f28-8120-cb46ec0595ee",
      "m1": "چو رستم بیاید نکوهش کند",
      "m2": "مگر کین سخن را پژوهش کند",
      "verse_number": 89
    },
    {
      "id": "bee3a351-f4cd-49d5-b88a-778573ab7d53",
      "m1": "که چون مرغ پیچیده بودم بدام",
      "m2": "همه کار ناکام و پیکار خام",
      "verse_number": 90
    },
    {
      "id": "59b603ef-0cfc-4f10-9193-2c7c6d37b46c",
      "m1": "سپهبد همان بود و لشکر همان",
      "m2": "کسی را ندیدم ز گردان دمان",
      "verse_number": 91
    },
    {
      "id": "273026ea-cff7-431a-a9d2-b9aed765c3de",
      "m1": "یکی حمله آریم چون شیر نر",
      "m2": "شوند از بن که مگر زاستر",
      "verse_number": 92
    },
    {
      "id": "65e4fb11-a889-4969-b08a-fb199b0dbd7a",
      "m1": "سپه گفت کین برتری خود مجوی",
      "m2": "سخن زین نشان هیچ گونه مگوی",
      "verse_number": 93
    },
    {
      "id": "02e1ca18-e245-40d0-9e2d-82deae7a4476",
      "m1": "کزین کوه کس پیشتر نگذرد",
      "m2": "مگر رستم این رزمگه بنگرد",
      "verse_number": 94
    },
    {
      "id": "495a7133-8540-423b-8905-70b8083969cd",
      "m1": "بباشیم بر پیش یزدان بپای",
      "m2": "که اویست بر نیکوی رهنمای",
      "verse_number": 95
    },
    {
      "id": "771cc767-a7ee-4437-9b27-421adc1f5533",
      "m1": "بفرمان دارندهٔ هور و ماه",
      "m2": "تهمتن بیاید بدین رزمگاه",
      "verse_number": 96
    },
    {
      "id": "eb7ea43d-718a-4fb4-a951-ca1ee2853bde",
      "m1": "چه داری دژم اختر خویش را",
      "m2": "درم بخش و دینار درویش را",
      "verse_number": 97
    },
    {
      "id": "acc6ab28-654f-4685-bda3-6fa91c57acf1",
      "m1": "بشادی ز گردان ایران گروه",
      "m2": "خروشی برآمد ز بالای کوه",
      "verse_number": 98
    }
  ],
