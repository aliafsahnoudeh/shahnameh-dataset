{
  "id": "70b7e4ae-eb15-4f01-874c-e2d9abb9f101",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "78ccd353-9e00-4455-ac39-a55ad3097772",
      "m1": "سپه برنشاند و بنه برنهاد",
      "m2": "وزان کشتنگان کرد بسیار یاد",
      "verse_number": 1
    },
    {
      "id": "5e230f5d-8d25-4839-ad35-f1e039a2a84e",
      "m1": "ازین سان همی رفت روز و شبان",
      "m2": "پر از غم دل و ناچریده لبان",
      "verse_number": 2
    },
    {
      "id": "6a1fe47b-fe07-42e3-b484-57562ee32dd3",
      "m1": "همه دیده پر خون و دل پر ز داغ",
      "m2": "ز رنج روان گشته چون پر زاغ",
      "verse_number": 3
    },
    {
      "id": "1ea7a4e0-05b9-421b-a937-d8e53260dfe2",
      "m1": "چو نزدیک کوه هماون رسید",
      "m2": "بران دامن کوه لشکر کشید",
      "verse_number": 4
    },
    {
      "id": "f946dfa7-390b-4cb7-863b-6758f59b0f9c",
      "m1": "چنین گفت طوس سپهبد بگیو",
      "m2": "که ای پر خرد نامبردار نیو",
      "verse_number": 5
    },
    {
      "id": "761f498f-5311-413f-9128-932ea1fa9ba4",
      "m1": "سه روزست تا زین نشان تاختی",
      "m2": "بخواب و بخوردن نپرداختی",
      "verse_number": 6
    },
    {
      "id": "f6d3b5aa-fb71-4ebf-9e1b-020f58c992c6",
      "m1": "بیا و بیاسا و چیزی بخور",
      "m2": "برامش و جامه بنمای سر",
      "verse_number": 7
    },
    {
      "id": "d69313fc-2c1d-4f9e-a595-23e510023fda",
      "m1": "که من بیگمانم که پیران بجنگ",
      "m2": "پس ما بیاید کنون بیدرنگ",
      "verse_number": 8
    },
    {
      "id": "376763c4-ce18-4b42-ad48-4d7271140d85",
      "m1": "کسی را که آسودهتر زین گروه",
      "m2": "به بیژن بمان و تو برشو بکوه",
      "verse_number": 9
    },
    {
      "id": "af7a225c-c8ce-4712-8cf2-83fb7be4690e",
      "m1": "همه خستگان را سوی که کشید",
      "m2": "ز آسودگان لشکری برگزید",
      "verse_number": 10
    },
    {
      "id": "43a1e1ba-d2f0-476e-9d56-eaab4da98ee5",
      "m1": "چنین گفت کین کوه سر جای ماست",
      "m2": "بباید کنون خویشتن کرد راست",
      "verse_number": 11
    },
    {
      "id": "4bcf5f93-c561-4162-8cb4-36ffc7f9ba04",
      "m1": "طلایه ز کوه اندر آمد بدشت",
      "m2": "بدان تا بریشان نشاید گذشت",
      "verse_number": 12
    },
    {
      "id": "2e9d8ca2-93a4-49dd-82e5-740dfe0dccd0",
      "m1": "خروش نگهبان و آوای زنگ",
      "m2": "تو گفتی بجوش آمد از کوه سنگ",
      "verse_number": 13
    },
    {
      "id": "3c5fe02f-12b2-41d9-97e0-6164b584fa13",
      "m1": "همآنگه برآمد ز چرخ آفتاب",
      "m2": "جهان گشت برسان دریای آب",
      "verse_number": 14
    },
    {
      "id": "c107183b-7075-45bb-9759-3c1fbc409c92",
      "m1": "ز درگاه پیران برآمد خروش",
      "m2": "چنان شد که برخیزد از خاک جوش",
      "verse_number": 15
    },
    {
      "id": "f745b355-eef3-455c-bbc8-d3efb35b6b39",
      "m1": "بهومان چنین گفت کاکنون بجنگ",
      "m2": "نباید همانا فراوان درنگ",
      "verse_number": 16
    },
    {
      "id": "38ba0da9-1fa6-42f4-89a2-59c59dea8247",
      "m1": "سواران دشمن همه کشتهاند",
      "m2": "وگر خسته از جنگ برگشتهاند",
      "verse_number": 17
    },
    {
      "id": "e4683ab1-39d6-4225-95e0-f66bec3f3c16",
      "m1": "بزد کوس و از دشت برخاست غو",
      "m2": "همی رفت پیش سپه پیشرو",
      "verse_number": 18
    },
    {
      "id": "8fa93302-34dc-4d51-8261-8c74d90e66cc",
      "m1": "رسیدند ترکان بدان رزمگاه",
      "m2": "همه رزمگه خیمه بد بیسپاه",
      "verse_number": 19
    },
    {
      "id": "5548615d-28cc-4f19-86be-fb501c5062ff",
      "m1": "بشد نزد پیران یکی مژدهخواه",
      "m2": "که کس نیست ایدر ز ایران سپاه",
      "verse_number": 20
    },
    {
      "id": "41aecaf9-d93b-42da-800e-4fbdc343aa28",
      "m1": "ز لشکر بشادی برآمد خروش",
      "m2": "بفرمان پیران نهادند گوش",
      "verse_number": 21
    },
    {
      "id": "62d1a794-f77d-4995-a3e5-4c2da38d6d3f",
      "m1": "سپهبد چنین گفت با بخردان",
      "m2": "که ای نامور پرهنر موبدان",
      "verse_number": 22
    },
    {
      "id": "def7abd7-40ca-4d0b-a8e4-f13ab719fa01",
      "m1": "چه سازیم و این را چه دانید رای",
      "m2": "که اکنون ز دشمن تهی ماند جای",
      "verse_number": 23
    },
    {
      "id": "72ff8bd5-5ec6-4bc2-a430-0d1a2d341f2b",
      "m1": "سواران لشکر ز پیر و جوان",
      "m2": "همه تیز گفتند با پهلوان",
      "verse_number": 24
    },
    {
      "id": "b49d461e-eaeb-4341-9f79-01d279f014b6",
      "m1": "که لشکر گریزان شد از پیش ما",
      "m2": "شکست آمد اندر بداندیش ما",
      "verse_number": 25
    },
    {
      "id": "75e2ea0e-71cf-4269-aaf6-0dd4dfefda4b",
      "m1": "یکی رزمگاهست پر خون و خاک",
      "m2": "ازیشان نه هنگام بیم است و باک",
      "verse_number": 26
    },
    {
      "id": "18bd2d43-5dca-406d-8d7b-a3c196da19a6",
      "m1": "بباید پی دشمن اندر گرفت",
      "m2": "ز مولش سزد گر بمانی شگفت",
      "verse_number": 27
    },
    {
      "id": "59c109d3-7d38-45a0-baf0-8d2fd333bc03",
      "m1": "گریزان ز باد اندرآید بب",
      "m2": "به آید ز مولیدن ایدر شتاب",
      "verse_number": 28
    },
    {
      "id": "50980110-d08b-45bd-afa5-5adc63866111",
      "m1": "چنین گفت پیران که هنگام جنگ",
      "m2": "شود سست پای شتاب از درنگ",
      "verse_number": 29
    },
    {
      "id": "68871a51-5e4b-452f-b5b9-ee834921bbd5",
      "m1": "سپاهی بکردار دریای آب",
      "m2": "شدست انجمن پیش افراسیاب",
      "verse_number": 30
    },
    {
      "id": "873c3a62-4e26-4faf-a144-c43e55b2a008",
      "m1": "بمانیم تا آن سپاه گران",
      "m2": "بیایند گردان و جنگآوران",
      "verse_number": 31
    },
    {
      "id": "93c0add0-3f28-41d8-a07c-17cb1fdb4049",
      "m1": "ازان پس بایران نمانیم کس",
      "m2": "چنین است رای خردمند و بس",
      "verse_number": 32
    },
    {
      "id": "1f528aba-e662-42eb-92a3-74b369c0b8c1",
      "m1": "بدو گفت هومان که ای پهلوان",
      "m2": "مرنجان بدین کار چندین روان",
      "verse_number": 33
    },
    {
      "id": "a636fca1-1b73-4279-9868-eac3480582eb",
      "m1": "سپاهی بدان زور و آن جوش و دم",
      "m2": "شدی روی دریا ازیشان دژم",
      "verse_number": 34
    },
    {
      "id": "cb09c85b-124c-452d-b808-791251062a07",
      "m1": "کنون خیمه و گاه و پردهسرای",
      "m2": "همه مانده برجای و رفته ز جای",
      "verse_number": 35
    },
    {
      "id": "c7f34927-6b8f-48f7-87e4-9a10baef1b23",
      "m1": "چنان دان که رفتن ز بیچارگیست",
      "m2": "نمودن بما پشت یکبارگیست",
      "verse_number": 36
    },
    {
      "id": "d2a3cfe1-bb27-4553-b414-779369aacd15",
      "m1": "نمانیم تا نزد خسرو شوند",
      "m2": "بدرگاه او لشکری نو شوند",
      "verse_number": 37
    },
    {
      "id": "b57591f5-6df7-4b78-9c80-c629a176b479",
      "m1": "ز زابلستان رستم آید بجنگ",
      "m2": "زیانی بود سهمگین زین درنگ",
      "verse_number": 38
    },
    {
      "id": "96dd7c7d-85de-4eb8-a7ce-a7635b9c715b",
      "m1": "کنون ساختن باید و تاختن",
      "m2": "فسونها و نیرنگها ساختن",
      "verse_number": 39
    },
    {
      "id": "51f280e6-b979-4998-a5c6-9e4f81201057",
      "m1": "چو گودرز را با سپهدار طوس",
      "m2": "درفش همایون و پیلان و کوس",
      "verse_number": 40
    },
    {
      "id": "63b99260-3176-4e34-b979-7c08922d222f",
      "m1": "همه بیگمانی بچنگ آوریم",
      "m2": "بد آید چو ایدر درنگ آوریم",
      "verse_number": 41
    },
    {
      "id": "7ef605e6-b847-45d3-aa69-d76de92291b2",
      "m1": "چنین داد پاسخ بدو پهلوان",
      "m2": "که بیداردل باش و روشنروان",
      "verse_number": 42
    },
    {
      "id": "fb466f57-ccd8-41d6-9567-f3e9eb0bdd4e",
      "m1": "چنان کن که نیکاختر و رای تست",
      "m2": "که چرخ فلک زیر بالای تست",
      "verse_number": 43
    },
    {
      "id": "b2155fe1-2c6c-4141-81fa-a348a1671acf",
      "m1": "پس لشکر اندر گرفتند راه",
      "m2": "سپهدار پیران و توران سپاه",
      "verse_number": 44
    },
    {
      "id": "ff58f909-1b5c-4df1-b257-78c7c878fbd6",
      "m1": "به لهاک فرمود کاکنون مایست",
      "m2": "بگردان عنان با سواری دویست",
      "verse_number": 45
    },
    {
      "id": "75de560f-762b-43db-bab5-26f8b0d21018",
      "m1": "بدو گفت مگشای بند از میان",
      "m2": "ببین تا کجایند ایرانیان",
      "verse_number": 46
    },
    {
      "id": "9edc493d-d784-4fcb-8d57-600a6eb80dc6",
      "m1": "همی رفت لهاک برسان باد",
      "m2": "ز خواب و ز خوردن نکرد ایچ یاد",
      "verse_number": 47
    },
    {
      "id": "9703a076-a1e9-4f3f-b6f5-40a116754feb",
      "m1": "چو نیمی ز تیره شب اندر گذشت",
      "m2": "طلایه بدیدش بتاریک دشت",
      "verse_number": 48
    },
    {
      "id": "6fa1c55d-4e9a-46db-88f3-bfac78321689",
      "m1": "خروش آمد از کوه و آوای زنگ",
      "m2": "ندید ایچ لهاک جای درنگ",
      "verse_number": 49
    },
    {
      "id": "80e41994-d5b2-48fa-b497-1b09ccd08432",
      "m1": "بنزدیک پیران بیامد ز راه",
      "m2": "بدو آگهی داد ز ایران سپاه",
      "verse_number": 50
    },
    {
      "id": "647bee08-1d8a-489d-9e4e-7e38fb75ddf5",
      "m1": "که ایشان بکوه هماون درند",
      "m2": "همه بسته بر پیش راه گزند",
      "verse_number": 51
    },
    {
      "id": "3b56474e-55f9-4ff1-9525-36995e60ee6f",
      "m1": "بهومان بفرمود پیران که زود",
      "m2": "عنان و رکیبت بباید بسود",
      "verse_number": 52
    },
    {
      "id": "aaa23447-2131-4a76-87a8-c9b4dd05ecac",
      "m1": "ببر چند باید ز لشکر سوار",
      "m2": "ز گردان گردنکش نامدار",
      "verse_number": 53
    },
    {
      "id": "8e4839a6-c90d-466e-9f3a-1b0d18efa543",
      "m1": "که ایرانیان با درفش و سپاه",
      "m2": "گرفتند کوه هماون پناه",
      "verse_number": 54
    },
    {
      "id": "832bfacc-2f14-4944-acd4-e4101b1f4dad",
      "m1": "ازین رزم رنج آید اکنون بروی",
      "m2": "خرد تیز کن چارهٔ کار جوی",
      "verse_number": 55
    },
    {
      "id": "e7ab67c5-c597-4a31-b90f-6700222c8b56",
      "m1": "گر آن مرد با کاویانی درفش",
      "m2": "بیاری شود روی ایشان بنفش",
      "verse_number": 56
    },
    {
      "id": "26435b2e-2c56-45be-8b05-1148ffe041ea",
      "m1": "اگر دستیابی بشمشیر تیز",
      "m2": "درفش و همه نیزه کن ریزریز",
      "verse_number": 57
    },
    {
      "id": "df78242f-c97d-408c-a6ba-866870cdd56a",
      "m1": "من اینک پساندر چو باد دمان",
      "m2": "بیایم نسازم درنگ و زمان",
      "verse_number": 58
    },
    {
      "id": "eb550a37-a5fc-4078-bf22-3dc5d998633d",
      "m1": "گزین کرد هومان ز لشکر سوار",
      "m2": "سپردار و شمشیرزن سیهزار",
      "verse_number": 59
    },
    {
      "id": "a875604f-72bf-4143-a500-8f86ddfc4759",
      "m1": "چو خورشید تابنده بنمود تاج",
      "m2": "بگسترد کافور بر تخت عاج",
      "verse_number": 60
    },
    {
      "id": "9bbe9c36-9bb8-4a86-bcc9-a25965e06b06",
      "m1": "پدید آمد از دور گرد سپاه",
      "m2": "غو دیدهبان آمد از دیدهگاه",
      "verse_number": 61
    },
    {
      "id": "2a3e5147-870b-41ea-b061-7155dc9cd624",
      "m1": "که آمد ز ترکان سپاهی پدید",
      "m2": "بابر سیه گردشان برکشید",
      "verse_number": 62
    },
    {
      "id": "c0a785e5-5bb6-4543-88bc-e1a61665e924",
      "m1": "چو بشنید جوشن بپوشید طوس",
      "m2": "برآمد دم بوق و آوای کوس",
      "verse_number": 63
    },
    {
      "id": "d58e6525-1fc4-4432-8b6e-cade780cddba",
      "m1": "سواران ایران همه همگروه",
      "m2": "رده برکشیدند بر پیش کوه",
      "verse_number": 64
    },
    {
      "id": "b44da3d4-12b6-4a5a-8104-08ef67884a69",
      "m1": "چو هومان بدید آن سپاه گران",
      "m2": "گراییدن گرز و تیغ سران",
      "verse_number": 65
    },
    {
      "id": "edf748ce-2c99-4013-a027-f71102d94e04",
      "m1": "چنین گفت هومان بگودرز و طوس",
      "m2": "کز ایران برفتید با پیل و کوس",
      "verse_number": 66
    },
    {
      "id": "dab69ce9-2d97-4e3e-90d6-eb19afecf20d",
      "m1": "سوس شهر ترکان بکین آختن",
      "m2": "بدان روی لشکر برون تاختن",
      "verse_number": 67
    },
    {
      "id": "61eaa46d-823e-4d89-96ef-c7110a8f9ae8",
      "m1": "کنون برگزیدی چو نخچیر کوه",
      "m2": "شدستی ز گردان توران ستوه",
      "verse_number": 68
    },
    {
      "id": "a4ea8b22-a434-4083-9621-f659af23f308",
      "m1": "نیایدت زین کار خود شرم و ننگ",
      "m2": "خور و خواب و آرام بر کوه و سنگ",
      "verse_number": 69
    },
    {
      "id": "5aa32626-b144-4350-ae1d-c4a2e3581657",
      "m1": "چو فردا برآید ز کوه آفتاب",
      "m2": "کنم زین حصار تو دریای آب",
      "verse_number": 70
    },
    {
      "id": "16736b72-1949-4abe-9f6f-d73e5af0476b",
      "m1": "بدانی که این جای بیچارگیست",
      "m2": "برین کوه خارا بباید گریست",
      "verse_number": 71
    },
    {
      "id": "8ecbe597-dac8-489c-bbff-9bada171fd84",
      "m1": "هیونی بپیران فرستاد زود",
      "m2": "که اندیشهٔ ما دگرگونه بود",
      "verse_number": 72
    },
    {
      "id": "76a81353-48cb-4588-8393-8719ad45ad8d",
      "m1": "دگرگونه بود آنچ انداختیم",
      "m2": "بریشان همی تاختن ساختیم",
      "verse_number": 73
    },
    {
      "id": "2786c973-0a9f-4ea0-af24-0589b26ab809",
      "m1": "همه کوه یکسر سپاهست و کوس",
      "m2": "درفش از پس پشت گودرز و طوس",
      "verse_number": 74
    },
    {
      "id": "2eb27eb9-7979-4285-b445-a3e5349be098",
      "m1": "چنان کن که چون بردمد چاک روز",
      "m2": "پدید آید از چرخ گیتی فروز",
      "verse_number": 75
    },
    {
      "id": "4d200cf0-3ec0-4744-b943-4d71cbbbc011",
      "m1": "تو ایدر بوی ساخته با سپاه",
      "m2": "شده روی هامون ز لشکر سیاه",
      "verse_number": 76
    }
  ],
