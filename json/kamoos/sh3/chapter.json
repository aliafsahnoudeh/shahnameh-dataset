{
  "id": "5ecfa6d9-64ff-4dfc-ba76-fb21fcf45146",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "7c757ae0-f731-4baa-866b-85abc5326467",
      "m1": "درم داد و روزیدهان را بخواند",
      "m2": "بسی با سپهبد سخنها براند",
      "verse_number": 1
    },
    {
      "id": "f45acea0-3159-481e-9101-5ee301fb9cac",
      "m1": "همان رای زد با تهمتن بر آن",
      "m2": "چنین تا رخ روز شد در نهان",
      "verse_number": 2
    },
    {
      "id": "e06588d3-7b4d-4b98-a9dd-ef770324a6f9",
      "m1": "چو خورشید بر زد سنان از نشیب",
      "m2": "شتاب آمد از رفتن با نهیب",
      "verse_number": 3
    },
    {
      "id": "99fce8e8-178e-4c1d-bc13-6ae1963d82da",
      "m1": "سپهبد بیامد به نزدیک شاه",
      "m2": "ابا گیو گودرز و چندی سپاه",
      "verse_number": 4
    },
    {
      "id": "c9708658-f273-4d7a-b5bc-6a51c7c2b29b",
      "m1": "بدو داد شاه اختر کاویان",
      "m2": "بران سان که بودی به رسم کیان",
      "verse_number": 5
    },
    {
      "id": "0ab63a69-3e24-4c83-9745-d8fcce80190b",
      "m1": "ز اختر یکی روز فرخ بجست",
      "m2": "که بیرون شدن را کی آید درست",
      "verse_number": 6
    },
    {
      "id": "619f91e8-d9bc-41db-8bee-e1830419e3b5",
      "m1": "همی رفت با کوس خسرو بدشت",
      "m2": "بدان تا سپهبد بدو برگذشت",
      "verse_number": 7
    },
    {
      "id": "7e89bef4-6538-49cb-8319-918cce856953",
      "m1": "یکی لشکری همچو کوه سیاه",
      "m2": "گذشتند بر پیش بیدار شاه",
      "verse_number": 8
    },
    {
      "id": "1ece4221-eb8a-42f9-b5c1-736e5b0ecc0f",
      "m1": "پس لشکر اندر سپهدار طوس",
      "m2": "بیامد بر شه زمین داد بوس",
      "verse_number": 9
    },
    {
      "id": "fc33ccd8-9836-48e1-a37e-5f800df859a6",
      "m1": "برو آفرین کرد و بر شد خروش",
      "m2": "جهان آمد از بانگ اسپان بجوش",
      "verse_number": 10
    },
    {
      "id": "6fd6aede-a22e-4494-9019-9870e8dd637d",
      "m1": "یکی ابر بست از بر گرد سم",
      "m2": "برآمد خروشیدن گاو دم",
      "verse_number": 11
    },
    {
      "id": "abdbe8a8-fb6e-4559-a37e-d72431a05bbb",
      "m1": "ز بس جوشن و کاویانی درفش",
      "m2": "شده روی گیتی سراسر بنفش",
      "verse_number": 12
    },
    {
      "id": "9512c11b-4030-4bd7-a94f-c626659e9e5d",
      "m1": "تو خورشید گفتی به آب اندر است",
      "m2": "سپهر و ستاره بخواب اندر است",
      "verse_number": 13
    },
    {
      "id": "0dc4b7de-fa2e-4aa0-8ee8-8e6859c2d81c",
      "m1": "نهاد از بر پیل پیروزه مهد",
      "m2": "همی رفت زین گونه تا رود شهد",
      "verse_number": 14
    },
    {
      "id": "dacc7a0b-b5c8-4956-a2b9-c9d2bfd9fc1d",
      "m1": "هیونی بکردار باد دمان",
      "m2": "بدش نزد پیران هم اندر زمان",
      "verse_number": 15
    },
    {
      "id": "15e270e9-a130-404c-9fcb-c3a8e09746de",
      "m1": "که من جنگ را گردن افراخته",
      "m2": "سوی رود شهد آمدم ساخته",
      "verse_number": 16
    },
    {
      "id": "fa860873-99f1-4458-9951-93273bd08932",
      "m1": "چو بشنید پیران غمی گشت سخت",
      "m2": "فروبست بر پیل ناکام رخت",
      "verse_number": 17
    },
    {
      "id": "fa2660d0-7316-4bf4-a463-a0c51f3577ec",
      "m1": "برون رفت با نامداران خویش",
      "m2": "گزیده دلاور سواران خویش",
      "verse_number": 18
    },
    {
      "id": "9e777cc6-b344-4870-b11a-40a74167a960",
      "m1": "که ایران سپه را ببیند که چیست",
      "m2": "سرافراز چندست و با طوس کیست",
      "verse_number": 19
    },
    {
      "id": "0e813664-4600-42cf-85b1-5cec34d9eb65",
      "m1": "رده برکشیدند زان سوی رود",
      "m2": "فرستاد نزد سپهبد درود",
      "verse_number": 20
    },
    {
      "id": "8cc10326-f772-4760-8422-9113f9dee36c",
      "m1": "وزین روی لشکر بیاورد طوس",
      "m2": "درفش همایون و پیلان و کوس",
      "verse_number": 21
    },
    {
      "id": "2160ddb9-7773-4615-b2a6-d03a1265c599",
      "m1": "سپهدار پیران یکی چرپ گوی",
      "m2": "ز ترکان فرستاد نزدیک اوی",
      "verse_number": 22
    },
    {
      "id": "488dec99-39f7-4b05-a66e-b226fd2cb174",
      "m1": "بگفت آنک من با فرنگیس و شاه",
      "m2": "چه کردم ز خوبی بهر جایگاه",
      "verse_number": 23
    },
    {
      "id": "3f8b2471-fb77-48ca-ad28-edce5c5053f4",
      "m1": "ز درد سیاوش خروشان بدم",
      "m2": "چو بر آتش تیز جوشان بدم",
      "verse_number": 24
    },
    {
      "id": "3d7967fa-8f06-47f2-a515-09607fd6d0c5",
      "m1": "کنون بار تریاک زهر آمدست",
      "m2": "مرا زو همه رنج بهر آمدست",
      "verse_number": 25
    },
    {
      "id": "8baf4b93-0ea7-47c4-b9a4-a9c30dc275ef",
      "m1": "دل طوس غمگین شد از کار اوی",
      "m2": "بپیچید زان درد و پیکار اوی",
      "verse_number": 26
    },
    {
      "id": "1d987087-e43e-4aa7-893d-ab13470befb0",
      "m1": "چنین داد پاسخ که از مهر تو",
      "m2": "فراوان نشانست بر چهر تو",
      "verse_number": 27
    },
    {
      "id": "12de2bc8-6063-4818-8bdd-c161a708d42e",
      "m1": "سر آزاد کن دور شو زین میان",
      "m2": "ببند این در بیم و راه زیان",
      "verse_number": 28
    },
    {
      "id": "28af71ab-a311-4083-90ed-2759bdd6fa28",
      "m1": "بر شاه ایران شوی با سپاه",
      "m2": "مکافات یابی به نیکی ز شاه",
      "verse_number": 29
    },
    {
      "id": "05b36236-9f00-4f2f-a0bc-bdc744dbe77b",
      "m1": "بایران ترا پهلوانی دهد",
      "m2": "همان افسر خسروانی دهد",
      "verse_number": 30
    },
    {
      "id": "792c15dc-1e7b-45af-ab97-df64d998a79f",
      "m1": "چو یاد آیدش خوب کردار تو",
      "m2": "دلش رنجه گردد ز تیمار تو",
      "verse_number": 31
    },
    {
      "id": "f307dccd-da3c-4f31-8c92-2cba904cc79a",
      "m1": "چنین گفت گودرز و گیو و سران",
      "m2": "بزرگان و تیمارکش مهتران",
      "verse_number": 32
    },
    {
      "id": "77db66f9-d757-4a14-b682-6b322ebc1f20",
      "m1": "سرایندهٔ پاسخ آمد چو باد",
      "m2": "بنزدیک پیران ویسه نژاد",
      "verse_number": 33
    },
    {
      "id": "a7d41dbc-ea83-4c37-bd26-69e141f70949",
      "m1": "بگفت آنچ بشنید با پهلوان",
      "m2": "ز طوس و ز گودرز روشنروان",
      "verse_number": 34
    },
    {
      "id": "1ecc9940-e4a2-4066-9177-893d5b90d096",
      "m1": "چنین داد پاسخ که من روز و شب",
      "m2": "بیاد سپهبد گشایم دو لب",
      "verse_number": 35
    },
    {
      "id": "42b10abe-dd91-4007-8553-76a67b71b7ee",
      "m1": "شوم هرچ هستند پیوند من",
      "m2": "خردمند کو بشنود پند من",
      "verse_number": 36
    },
    {
      "id": "4e20dda5-5d6b-4324-8e85-45f28b2b3de9",
      "m1": "بایران گذارم بر و بوم و رخت",
      "m2": "سر نامور بهتر از تاج و تخت",
      "verse_number": 37
    },
    {
      "id": "c57b21f6-0655-4dce-aee6-118f29619855",
      "m1": "وزین گفتتها بود مغزش تهی",
      "m2": "همی جست نو روزگار بهی",
      "verse_number": 38
    },
    {
      "id": "9bd06011-2226-4168-9d0f-07811bff453b",
      "m1": "هیونی برافگند هنگام خواب",
      "m2": "فرستاد نزدیک افراسیاب",
      "verse_number": 39
    },
    {
      "id": "2ebdafda-6977-4cad-b83d-c7c08ca85cc9",
      "m1": "کزایران سپاه آمد و پیل و کوس",
      "m2": "همان گیو و گودرز و رهام و طوس",
      "verse_number": 40
    },
    {
      "id": "014dffb0-daa6-4313-b923-1017c29c0ab9",
      "m1": "فراوان فریبش فرستادهام",
      "m2": "ز هر گونهای بندها دادهام",
      "verse_number": 41
    },
    {
      "id": "93e56b0c-b398-4e5e-9055-1e5c22155fae",
      "m1": "سپاهی ز جنگاوران برگزین",
      "m2": "که بر زین شتابش بیاید ز کین",
      "verse_number": 42
    },
    {
      "id": "2ad54e33-8857-44b8-9d2e-15bea8641b36",
      "m1": "مگر بومشان از بنه برکنیم",
      "m2": "بتخت و بگنج آتش اندر زنیم",
      "verse_number": 43
    },
    {
      "id": "e15903c3-607d-4290-859f-b4e537189936",
      "m1": "وگر نه ز کین سیاوش سپاه",
      "m2": "نیاساید از جنگ هرگز نه شاه",
      "verse_number": 44
    },
    {
      "id": "c748f55b-7cb9-4020-8b25-f5e8df31276e",
      "m1": "چو بشنید افراسیاب این سخن",
      "m2": "سران را بخواند از همه انجمن",
      "verse_number": 45
    },
    {
      "id": "af024003-968d-42a3-bf72-55a51d8edcee",
      "m1": "یکی لشکری ساخت افراسیاب",
      "m2": "که تاریک شد چشمهٔ آفتاب",
      "verse_number": 46
    },
    {
      "id": "46a3357f-efda-4dfd-9de1-687aaf7a7801",
      "m1": "دهم روز لشکر بپیران رسید",
      "m2": "سپاهی کزو شد زمین ناپدید",
      "verse_number": 47
    },
    {
      "id": "8a99d47f-5648-42fa-a4f8-ee8757e695b8",
      "m1": "چو لشکر بیاسود روزی بداد",
      "m2": "سپه برگرفت و بنه برنهاد",
      "verse_number": 48
    },
    {
      "id": "25f908f8-8c47-4b3a-ba17-561b24cb9602",
      "m1": "ز پیمان بگردید وز یاد عهد",
      "m2": "بیامد دمان تا لب رود شهد",
      "verse_number": 49
    },
    {
      "id": "dc5dfa7a-c440-41d1-bf58-797de49536bb",
      "m1": "طلایه بیامد بنزدیک طوس",
      "m2": "که بربند بر کوههٔ پیل کوس",
      "verse_number": 50
    },
    {
      "id": "de42c8d4-e640-4ee1-837e-be6ba67e049c",
      "m1": "که پیران نداند سخن جز فریب",
      "m2": "چو داند که تنگ اندر آمد نهیب",
      "verse_number": 51
    },
    {
      "id": "f2f99f19-b223-49da-a7d6-502ba7192fda",
      "m1": "درفش جفا پیشه آمد پدید",
      "m2": "سپه بر لب رود صف برکشید",
      "verse_number": 52
    },
    {
      "id": "d70209c5-cb20-4097-b3d7-4bdc106cebba",
      "m1": "بیاراست لشکر سپهدار طوس",
      "m2": "بهامون کشیدند پیلان و کوس",
      "verse_number": 53
    },
    {
      "id": "7bc7fd77-f29c-4059-bf73-a94a388699a5",
      "m1": "دو رویه سپاه اندر آمد چو کوه",
      "m2": "سواران ترکان و ایران گروه",
      "verse_number": 54
    },
    {
      "id": "682261ca-8781-4715-81d4-42fcb1caea23",
      "m1": "چنان شد ز گرد سپاه آفتاب",
      "m2": "که آتش برآمد ز دریای آب",
      "verse_number": 55
    },
    {
      "id": "928143e7-6c83-42ed-a3b8-b0b1371192ed",
      "m1": "درخشیدن تیغ و ژوپین و خشت",
      "m2": "تو گفتی شب اندر هوا لاله کشت",
      "verse_number": 56
    },
    {
      "id": "6da543e2-01e7-4535-8016-8faa688f0b7c",
      "m1": "ز بس ترگ زرین و زرین سپر",
      "m2": "ز جوشن سواران زرین کمر",
      "verse_number": 57
    },
    {
      "id": "f0c59b54-8b1d-4834-b683-d755959a5599",
      "m1": "برآمد یکی ابر چون سندروس",
      "m2": "زمین گشت از گرد چون آبنوس",
      "verse_number": 58
    },
    {
      "id": "2598c3cf-fd56-4df7-b8d4-50d19e0d7a90",
      "m1": "سر سروران زیر گرز گران",
      "m2": "چو سندان شد و پتک آهنگران",
      "verse_number": 59
    },
    {
      "id": "5500d100-9622-4151-9aff-3fe9a14f3fbd",
      "m1": "ز خون رود گفتی میستان شدست",
      "m2": "ز نیزه هوا چون نیستان شدست",
      "verse_number": 60
    },
    {
      "id": "4a977aeb-ca41-4e56-b5e1-c0c960bae191",
      "m1": "بسی سر گرفتار دام کمند",
      "m2": "بسی خوار گشته تن ارجمند",
      "verse_number": 61
    },
    {
      "id": "b3990ce3-edd4-4033-b2f9-578bdc617cee",
      "m1": "کفن جوشن و بستر از خون و خاک",
      "m2": "تن نازدیده بشمشیر چاک",
      "verse_number": 62
    },
    {
      "id": "205290f4-23c5-42e6-924e-193db78d478b",
      "m1": "زمین ارغوان و زمان سندروس",
      "m2": "سپهر و ستاره پرآوای کوس",
      "verse_number": 63
    },
    {
      "id": "c7a23838-f500-49f0-b823-7eee6a5b3794",
      "m1": "اگر تاج جوید جهانجوی مرد",
      "m2": "وگر خاک گردد بروز نبرد",
      "verse_number": 64
    },
    {
      "id": "7ea68674-19a6-4bcf-8976-24e2d607c654",
      "m1": "بناکام میرفت باید ز دهر",
      "m2": "چه زو بهر تریاک یابی چه زهر",
      "verse_number": 65
    },
    {
      "id": "4485f9de-3475-4f94-bed4-d3fa115b5428",
      "m1": "ندانم سرانجام و فرجام چیست",
      "m2": "برین رفتن اکنون بباید گریست",
      "verse_number": 66
    },
    {
      "id": "a1e9e438-bfd6-4129-b77c-600a9028fbaf",
      "m1": "یکی نامداری بد ارژنگ نام",
      "m2": "بابر اندر آورده از جنگ نام",
      "verse_number": 67
    },
    {
      "id": "bdb60137-b6b2-4a0b-9c7a-d4790cb2b522",
      "m1": "برآورد از دشت آورد گرد",
      "m2": "از ایرانیان جست چندی نبرد",
      "verse_number": 68
    },
    {
      "id": "ba8525e4-9f88-4240-b1f3-36d522094f52",
      "m1": "چو از دور طوس سپهبد بدید",
      "m2": "بغرید و تیغ از میان برکشید",
      "verse_number": 69
    },
    {
      "id": "0b22138f-9db4-41e6-9ca6-aa399151f38c",
      "m1": "بپور زره گفت نام تو چیست",
      "m2": "ز ترکان جنگی ترا یار کیست",
      "verse_number": 70
    },
    {
      "id": "03f26221-2e70-4d10-8348-0f91f1e3bbbe",
      "m1": "بدو گفت ارژنگ جنگی منم",
      "m2": "سرافراز و شیر درنگی منم",
      "verse_number": 71
    },
    {
      "id": "8c042513-a490-4933-880f-6fbc0b9e1fdf",
      "m1": "کنون خاک را از تو رخشان کنم",
      "m2": "به آوردگه برسرافشان کنم",
      "verse_number": 72
    },
    {
      "id": "04261e6b-6b06-434b-8ac8-ff9313e2018e",
      "m1": "چو گفتار پور زره شد ببن",
      "m2": "سپهدار ایران شنید این سخن",
      "verse_number": 73
    },
    {
      "id": "4abcc84c-ea9d-47fa-8f45-3898a1f25baf",
      "m1": "بپاسخ ندید ایچ رای درنگ",
      "m2": "همان آبداری که بودش بچنگ",
      "verse_number": 74
    },
    {
      "id": "2da75170-0bae-47f9-8fc1-05631e389901",
      "m1": "بزد بر سر و ترگ آن نامدار",
      "m2": "تو گفتی تنش سر نیاورد بار",
      "verse_number": 75
    },
    {
      "id": "78ada0bf-27c5-406c-86cf-9b4c54400cb1",
      "m1": "برآمد ز ایران سپه بوق و کوس",
      "m2": "که پیروز بادا سرافراز طوس",
      "verse_number": 76
    },
    {
      "id": "4e275dd7-071c-43b3-8132-e0de8ad78909",
      "m1": "غمی گشت پیران ز توران سپاه",
      "m2": "ز ترکان تهی ماند آوردگاه",
      "verse_number": 77
    },
    {
      "id": "ef7e4545-c073-4190-a4f4-58b53848defe",
      "m1": "دلیران توران و کنداوران",
      "m2": "کشیدند شمشیر و گرز گران",
      "verse_number": 78
    },
    {
      "id": "7c3e1958-dc0c-4cbb-a7cb-52f35395cfa0",
      "m1": "که یکسر بکوشیم و جنگ آوریم",
      "m2": "جهان بر دل طوس تنگ آوریم",
      "verse_number": 79
    },
    {
      "id": "3d2d3654-9342-4cb9-bcca-635071f230d5",
      "m1": "چنین گفت هومان که امروز جنگ",
      "m2": "بسازید و دل را مدارید تنگ",
      "verse_number": 80
    },
    {
      "id": "31339341-83f7-4481-b36d-9c802e8985d3",
      "m1": "گر ایدونک زیشان یکی نامور",
      "m2": "ز لشکر برارد به پیکار سر",
      "verse_number": 81
    },
    {
      "id": "27f0f340-47db-4ae1-8bb9-96c3df3627bd",
      "m1": "پذیره فرستیم گردی دمان",
      "m2": "ببینیم تا بر که گردد زمان",
      "verse_number": 82
    },
    {
      "id": "d93cb3ea-aea5-418e-82e9-2f92b57bbd9c",
      "m1": "وزیشان بتندی نجویید جنگ",
      "m2": "بباید یک امروز کردن درنگ",
      "verse_number": 83
    },
    {
      "id": "d4dd3d5c-7351-4a25-b9a0-af543bcb3571",
      "m1": "بدانگه که لشکر بجنبد ز جای",
      "m2": "تبیره برآید ز پردهسرای",
      "verse_number": 84
    },
    {
      "id": "bf97c01d-2681-4256-872d-3306b9026d16",
      "m1": "همه یکسره گرزها برکشیم",
      "m2": "یکی از لب رود برتر کشیم",
      "verse_number": 85
    },
    {
      "id": "d1ec1c29-b1e6-4321-bcf8-9858c639c06b",
      "m1": "بانبوه رزمی بسازیم سخت",
      "m2": "اگر یار باشد جهاندار و بخت",
      "verse_number": 86
    }
  ],
