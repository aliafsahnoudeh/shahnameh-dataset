{
  "id": "2eba0874-280f-4822-a96c-4dd9862f9c13",
  "title": "بخش ۲۴",
  "verses": [
    {
      "id": "7a59d0f5-78e5-4a82-8b86-0b8d0e48edc5",
      "m1": "چو آن نامه نزدیک خسرو رسید",
      "m2": "زپیوستن آگاهی نو رسید",
      "verse_number": 1
    },
    {
      "id": "2d99d68a-bc2f-45c3-80b9-606ed484194a",
      "m1": "به ایرانیان گفت کامروز مهر",
      "m2": "دگرگونه گردد همی برسپهر",
      "verse_number": 2
    },
    {
      "id": "5473f55f-a32a-4037-a1cd-e51d12367d37",
      "m1": "زقیصر یک نامه آمد بلند",
      "m2": "سخن گفتنش سر به سر سودمند",
      "verse_number": 3
    },
    {
      "id": "376b57ab-c206-42d1-9914-a3aac93d9805",
      "m1": "همی راه جوید که دیرینه کین",
      "m2": "ببرد ز روم و ز ایران زمین",
      "verse_number": 4
    },
    {
      "id": "09335129-1608-42ab-8ed7-f4e63c6be0a3",
      "m1": "چنین یافت پاسخ زایرانیان",
      "m2": "که هرگز نه برخاست کین ازمیان",
      "verse_number": 5
    },
    {
      "id": "432a03bd-11ed-4397-b3b9-39fb23488386",
      "m1": "چواین راست گردد بهنگام تو",
      "m2": "نویسند برتاجها نام تو",
      "verse_number": 6
    },
    {
      "id": "8c09c00f-a366-43d2-b0d3-83e76d678da5",
      "m1": "چوایشان بران گونه دیدند رای",
      "m2": "بپردخت خسرو زبیگانه جای",
      "verse_number": 7
    },
    {
      "id": "862b31fd-b61e-4d74-a157-fcbef001e7db",
      "m1": "دوات و قلم خواست وچینی حریر",
      "m2": "بفرمود تا پیش او شد دبیر",
      "verse_number": 8
    },
    {
      "id": "ac0d4ed8-3402-426e-9dd3-003ae23ef3c4",
      "m1": "یکی نامه بنوشت بر پهلوی",
      "m2": "برآیین شاهان خط خسروی",
      "verse_number": 9
    },
    {
      "id": "750d8c95-8a9c-4d7e-bdb4-da8965d5a5fa",
      "m1": "که پذرفت خسرو زیزدان پاک",
      "m2": "ز گردنده خورشید تا تیره خاک",
      "verse_number": 10
    },
    {
      "id": "a0b0126a-2b38-472a-a52a-591dbb3491f6",
      "m1": "که تا او بود شاه در پیشگاه",
      "m2": "ورا باشد ایران و گنج و سپاه",
      "verse_number": 11
    },
    {
      "id": "37f0ae71-9eef-4a0e-b255-dfffa67d0a0c",
      "m1": "نخواهد ز دارندگان باژ روم",
      "m2": "نه لشکر فرستد بران مرز وبوم",
      "verse_number": 12
    },
    {
      "id": "4b34f05a-1243-41c0-b0bf-1dcd4acc8f06",
      "m1": "هران شارستانی کزان مرز بود",
      "m2": "اگر چند بیکار و بیارز بود",
      "verse_number": 13
    },
    {
      "id": "60d15135-5969-42f7-8c1d-5d1197448e45",
      "m1": "بقیصر سپارد همه یک بیک",
      "m2": "ازین پس نوشته فرستیم و چک",
      "verse_number": 14
    },
    {
      "id": "2d44774a-8fb9-4aa5-b4ed-3ec6cdb67d40",
      "m1": "همان نیز دختر کزان مادرست",
      "m2": "که پاکست وپیوستهٔ قیصرست",
      "verse_number": 15
    },
    {
      "id": "686420a5-1223-4091-bbe8-e718760ad2bb",
      "m1": "بهمداستان پدرخواستیم",
      "m2": "بدین خواستن دل بیاراستیم",
      "verse_number": 16
    },
    {
      "id": "64126adb-bcfd-48e3-a01f-420098d63063",
      "m1": "هران کس که در بارگاه تواند",
      "m2": "ازایران و اندر پناه تواند",
      "verse_number": 17
    },
    {
      "id": "09fa5410-9a94-474c-83c8-a89caec0d59e",
      "m1": "چوگستهم و شاپور و چون اندیان",
      "m2": "چو خراد بر زین زتخم کیان",
      "verse_number": 18
    },
    {
      "id": "0d649294-225f-4737-878d-031924fc4910",
      "m1": "چو لشکر فرستی بدیشان سپار",
      "m2": "خرد یافته دختر نامدار",
      "verse_number": 19
    },
    {
      "id": "ce10c168-0eed-4c76-8ddd-ee9944751245",
      "m1": "بخویشی چنانم کنون باتو من",
      "m2": "چو از پیش بود آن بزرگ انجمن",
      "verse_number": 20
    },
    {
      "id": "d87638da-80d6-4422-9f7d-12f00d8a0831",
      "m1": "نخستین کیومرث با جمشید",
      "m2": "کزو بود گیتی ببیم وامید",
      "verse_number": 21
    },
    {
      "id": "cf396efd-dc7d-4d6d-ba9f-601af39126c1",
      "m1": "دگر هرچ هستند ایرج نژاد",
      "m2": "که آیین و فر فریدون نهاد",
      "verse_number": 22
    },
    {
      "id": "fdd9d095-5469-4a84-a294-e56bf69c0fb9",
      "m1": "بدین همنشان تا قباد بزرگ",
      "m2": "که از داد او خویش بدمیش وگرگ",
      "verse_number": 23
    },
    {
      "id": "10936411-3a3a-4796-ad45-8b859a86bf45",
      "m1": "همه کینه برداشتیم از میان",
      "m2": "یکی گشت رومی و ایرانیان",
      "verse_number": 24
    },
    {
      "id": "8cec6c91-8dd4-47de-90ab-a68be3ab74a1",
      "m1": "ز قیصر پذیرفتم آن دخترش",
      "m2": "که از دختران باشد او افسرش",
      "verse_number": 25
    },
    {
      "id": "51b3e251-b230-45ec-9c2b-1a12f65b9150",
      "m1": "ازین بر نگردم که گفتم یکی",
      "m2": "ز کردار بسیار تا اندکی",
      "verse_number": 26
    },
    {
      "id": "ae1b1e6d-a980-4617-a206-aa9a8dba9aea",
      "m1": "تو چیزی که گفتی درنگی مساز",
      "m2": "که بودن درین شارستان شد دراز",
      "verse_number": 27
    },
    {
      "id": "d34fd657-e3c9-4d9f-8183-1cd536b93cad",
      "m1": "چو کرد این سخنها برین گونه یاد",
      "m2": "نوشته بخورشید خراد داد",
      "verse_number": 28
    },
    {
      "id": "d41f071d-55bc-479a-80ab-2540c4c300d8",
      "m1": "سپهبد چو باد اندر آمد زجای",
      "m2": "باسپ کمیت اندر آورد پای",
      "verse_number": 29
    },
    {
      "id": "1aad3ebd-cd71-43fa-968f-fb9b8df97d42",
      "m1": "همیتاخت تا پیش قیصر چوباد",
      "m2": "سخنهای خسرو بدو کرد یاد",
      "verse_number": 30
    },
    {
      "id": "d37cfc18-054b-4577-82b3-a24460ea7bf5",
      "m1": "چو قیصر ازان نامه بگسست بند",
      "m2": "بدید آن سخنهای شاه بلند",
      "verse_number": 31
    },
    {
      "id": "fdb568d1-d66f-44a9-bfd5-cb40176a9e2a",
      "m1": "بفرمود تا هر که دانا بدند",
      "m2": "به گفتارها بر توانا بدند",
      "verse_number": 32
    },
    {
      "id": "918cf398-acd3-4344-872d-e2ff71774a06",
      "m1": "به نزدیک قیصر شدند انجمن",
      "m2": "بپرسید زیشان همه تن بتن",
      "verse_number": 33
    },
    {
      "id": "2c64c450-403d-48ad-a975-76eab10dd192",
      "m1": "که اکنون مر این را چه درمان کنیم",
      "m2": "ابا شاه ایران چه پیمان کنیم",
      "verse_number": 34
    },
    {
      "id": "9de1c308-41e5-482d-81a2-e8c4fd1f3f9a",
      "m1": "بدین نامه ما بیبهانه شدیم",
      "m2": "همی روم و ایران یگانه شدیم",
      "verse_number": 35
    },
    {
      "id": "f038f176-aa9e-44a7-88e6-baf0d68ff54b",
      "m1": "بزرگان فرزانه برخاستند",
      "m2": "زبان را به پاسخ بیاراستند",
      "verse_number": 36
    },
    {
      "id": "163fae07-30a0-4dc2-9320-7415124d85cc",
      "m1": "که ما کهترانیم و قیصر تویی",
      "m2": "جهاندار با تخت و افسر تویی",
      "verse_number": 37
    },
    {
      "id": "3e322846-edd0-47c6-a55d-7c8c490cd499",
      "m1": "نگه کن کنون رای و فرمان تو راست",
      "m2": "ز ما گر بخواهی تن و جان تو راست",
      "verse_number": 38
    },
    {
      "id": "f806c330-4f2e-4de1-88b3-1148b9501f70",
      "m1": "چو بشنید قیصر گرفت آفرین",
      "m2": "بدان نامداران با رای و دین",
      "verse_number": 39
    },
    {
      "id": "658c86e7-d64b-4384-9569-196546d4baa2",
      "m1": "همیبود تاشمع گردان سپهر",
      "m2": "دگرگونه ترشد به آیین و چهر",
      "verse_number": 40
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 40
  }
}