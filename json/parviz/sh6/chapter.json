{
  "id": "c40a3c59-c544-48b3-a34b-e693fa0f6dfa",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "c964a3be-420d-4d69-a5e7-58e4618907da",
      "m1": "چوخواهرش بشنید کامد ز راه",
      "m2": "برادرش پر درد زان رزمگاه",
      "verse_number": 1
    },
    {
      "id": "ff612f60-4117-425d-bb11-33bc95824e46",
      "m1": "بینداخت آن نامدار افسرش",
      "m2": "بیاورد فرمانبری چادرش",
      "verse_number": 2
    },
    {
      "id": "7dbf76a1-e5cb-4392-b2f1-7553c412f1c6",
      "m1": "بیامد بنزد برادر دمان",
      "m2": "دلش خسته ازدرد و تیره روان",
      "verse_number": 3
    },
    {
      "id": "266a6718-e691-4d24-bc57-389cf57223ee",
      "m1": "بدو گفت کای مهتر جنگجوی",
      "m2": "چگونه شدی پیش خسرو بگوی",
      "verse_number": 4
    },
    {
      "id": "c5153f23-a8cf-4fb4-87f5-98d5c10d1944",
      "m1": "گر او ازجوانی شود تیزوتند",
      "m2": "مگردان تو درآشتی رای کند",
      "verse_number": 5
    },
    {
      "id": "66317565-38f4-432f-bd9a-5df4a5a6953a",
      "m1": "بخواهر چنین گفت بهرام گرد",
      "m2": "که او را زشاهان نباید شمرد",
      "verse_number": 6
    },
    {
      "id": "2005e4f3-b00a-499a-9d90-23fbb4059f1f",
      "m1": "نه جنگی سواری نه بخشندهای",
      "m2": "نه داناسری گر درخشندهای",
      "verse_number": 7
    },
    {
      "id": "f3c02fe2-ca5a-4871-b2e0-0c7d5ea78cb3",
      "m1": "هنر بهتر از گوهر نامدار",
      "m2": "هنرمند باید تن شهریار",
      "verse_number": 8
    },
    {
      "id": "76aa2e92-54a4-4cfc-9a44-9d6da8f3da91",
      "m1": "چنین گفت داننده خواهر بدوی",
      "m2": "کهای پرهنر مهتر نامجوی",
      "verse_number": 9
    },
    {
      "id": "27c1c68b-ab2b-4a22-8fb8-0af789fd3747",
      "m1": "تو را چند گویم سخن نشنوی",
      "m2": "به پیش آوری تندی وبدخوی",
      "verse_number": 10
    },
    {
      "id": "a6372e80-9cc3-4bd0-96d0-2cd411e1112d",
      "m1": "نگر تاچه گوید سخن گوی بلخ",
      "m2": "که باشد سخن گفتن راست تلخ",
      "verse_number": 11
    },
    {
      "id": "6d3a48bf-7bff-4c12-adcd-d8c6f7a009eb",
      "m1": "هرآنکس که آهوی تو باتوگفت",
      "m2": "همه راستیها گشاد ازنهفت",
      "verse_number": 12
    },
    {
      "id": "5e049b28-ae18-45ce-8a9a-23ef43173c5f",
      "m1": "مکن رای ویرانی شهر خویش",
      "m2": "ز گیتی چو برداشتی بهرخویش",
      "verse_number": 13
    },
    {
      "id": "7398acb9-bb9c-45b4-8ce0-2b2672b8cf5a",
      "m1": "برین بریکی داستان زد کسی",
      "m2": "کجا بهره بودش ز دانش بسی",
      "verse_number": 14
    },
    {
      "id": "cd70a047-19aa-4d2b-aeaa-d9456b412571",
      "m1": "که خر شد که خواهد زگاوان سروی",
      "m2": "بیکباره گم کرد گوش وبروی",
      "verse_number": 15
    },
    {
      "id": "4703efb6-8975-45e2-8dc5-21151a5753e3",
      "m1": "نکوهش مخواه از جهان سر به سر",
      "m2": "نبود از تبارت کسی تاجور",
      "verse_number": 16
    },
    {
      "id": "a78efe7f-affb-44cd-b942-635254ab0147",
      "m1": "اگر نیستی درمیان این جوان",
      "m2": "نبودی من از داغ تیره روان",
      "verse_number": 17
    },
    {
      "id": "c0df68fd-8300-4b59-b5dc-27fd8b2dd513",
      "m1": "پدرزنده و تخت شاهی بجای",
      "m2": "نهاده تو اندر میان پیش پای",
      "verse_number": 18
    },
    {
      "id": "0b34df06-f402-478c-a6b7-127422a01661",
      "m1": "ندانم سرانجام این چون بود",
      "m2": "همیشه دو چشمم پر از خون بود",
      "verse_number": 19
    },
    {
      "id": "c427ccc0-e04f-43e0-b9cd-be7971e4442c",
      "m1": "جز از درد و نفرین نجویی همی",
      "m2": "گل زهر خیره ببویی همی",
      "verse_number": 20
    },
    {
      "id": "ceabd41c-84e9-488a-bd89-e96977a541e8",
      "m1": "چو گویند چوبینه بدنام گشت",
      "m2": "همه نام بهرام دشنام گشت",
      "verse_number": 21
    },
    {
      "id": "240125ce-b9df-48b3-a744-c160fb1afbde",
      "m1": "برین نیز هم خشم یزدان بود",
      "m2": "روانت به دوزخ به زندان بود",
      "verse_number": 22
    },
    {
      "id": "ca0acf27-945c-4da1-b0fc-0bb8d435831d",
      "m1": "نگر تا جز از هرمز شهریار",
      "m2": "که بد درجهان مر تو را خواستار",
      "verse_number": 23
    },
    {
      "id": "186fc9a6-49b1-4974-8698-5d51aedeabfb",
      "m1": "هم آن تخت و آن کالهٔ ساوه شاه",
      "m2": "بدست آمد و برنهادی کلاه",
      "verse_number": 24
    },
    {
      "id": "1fca9233-babe-4a15-aae9-d73e9aa9e9ab",
      "m1": "چو زو نامور گشتی اندر جهان",
      "m2": "بجویی کنون گاه شاهنشهان",
      "verse_number": 25
    },
    {
      "id": "c14d1dcc-b280-45e0-9e90-4bd900ff10ac",
      "m1": "همه نیکوییها ز یزدان شناس",
      "m2": "مباش اندرین تاجور ناسپاس",
      "verse_number": 26
    },
    {
      "id": "05e34790-18f5-4b36-a43e-46de12d6c851",
      "m1": "برزمی که کردی چنین کش مشو",
      "m2": "هنرمند بودی منی فش مشو",
      "verse_number": 27
    },
    {
      "id": "489272d1-2769-43a1-8a68-9eabdff348af",
      "m1": "به دل دیو را یار کردی همی",
      "m2": "به یزدان گنهگار گردی همی",
      "verse_number": 28
    },
    {
      "id": "fb6bff76-a838-43f1-ac86-90382a1e3d9d",
      "m1": "چو آشفته شد هرمز وبردمید",
      "m2": "به گفتار آذرگشسپ پلید",
      "verse_number": 29
    },
    {
      "id": "c450fb77-92d6-4e83-99f5-214260b1f7bc",
      "m1": "تو را اندرین صبر بایست کرد",
      "m2": "نبد بنده را روزگارنبرد",
      "verse_number": 30
    },
    {
      "id": "6879e856-c309-4d4a-a27b-8aa54f628fc2",
      "m1": "چو او را چنان سختی آمد بروی",
      "m2": "ز بردع بیامد پسر کینه جوی",
      "verse_number": 31
    },
    {
      "id": "f3940fc7-6911-4c20-9934-146b4282fc97",
      "m1": "ببایست رفتن برشاه نو",
      "m2": "بکام وی آراستن گاه نو",
      "verse_number": 32
    },
    {
      "id": "1d3983ad-af6b-41fa-83bc-058f779f81b4",
      "m1": "نکردی جوان جز برای تو کار",
      "m2": "ندیدی دلت جز به روزگار",
      "verse_number": 33
    },
    {
      "id": "1dbabe0c-0bc3-4fe3-b1cb-1b070a410491",
      "m1": "تن آسان بدی شاد وپیروزبخت",
      "m2": "چراکردی آهنگ این تاج وتخت",
      "verse_number": 34
    },
    {
      "id": "8f35654c-4021-4c42-888d-43af9c79e44f",
      "m1": "تودانی که ازتخمهٔ اردشیر",
      "m2": "بجایند شاهان برنا و پیر",
      "verse_number": 35
    },
    {
      "id": "b5d37a38-3635-4682-8ac1-ece5e77adf6e",
      "m1": "ابا گنج وبا لشکر بیشمار",
      "m2": "به ایران که خواند تو را شهریار",
      "verse_number": 36
    },
    {
      "id": "c5302144-d58e-427a-a3f0-62313e5c2bfe",
      "m1": "اگر شهریاری به گنج وسپاه",
      "m2": "توانست کردن به ایران نگاه",
      "verse_number": 37
    },
    {
      "id": "0f328203-fb51-4cf3-baf6-086e7804a5a1",
      "m1": "نبودی جز از ساوه سالار چین",
      "m2": "که آورد لشکر به ایران زمین",
      "verse_number": 38
    },
    {
      "id": "323994a2-6e80-4c91-972f-400876c579aa",
      "m1": "تو راپاک یزدان بروبرگماشت",
      "m2": "بد او ز ایران و توران بگاشت",
      "verse_number": 39
    },
    {
      "id": "8f9a5129-c8f6-49f8-9c30-017883404c1c",
      "m1": "جهاندار تا این جهان آفرید",
      "m2": "زمین کرد و هم آسمان آفرید",
      "verse_number": 40
    },
    {
      "id": "b9fc6ba4-eb19-4a83-a836-075de45d097f",
      "m1": "ندیدند هرگز سواری چوسام",
      "m2": "نزد پیش او شیردرنده گام",
      "verse_number": 41
    },
    {
      "id": "bd12a5b9-945f-4e04-82de-433b3ba87087",
      "m1": "چو نوذر شد از بخت بیدادگر",
      "m2": "بپا اندر آورد رایپدر",
      "verse_number": 42
    },
    {
      "id": "6b55b7ae-0e81-4ac0-92e9-a8690009d38f",
      "m1": "همه مهتران سام را خواستند",
      "m2": "همان تخت پیروزه آراستند",
      "verse_number": 43
    },
    {
      "id": "1043da2a-69b1-4941-b316-078f08a41743",
      "m1": "بران مهتران گفت هرگز مباد",
      "m2": "که جان سپهبد کند تاج یاد",
      "verse_number": 44
    },
    {
      "id": "0f2db591-8121-4d3c-86b1-af566173b688",
      "m1": "که خاک منوچهر گاه منست",
      "m2": "سر تخت نوذر کلاه منست",
      "verse_number": 45
    },
    {
      "id": "635369b2-4b4c-40f6-9c43-d90496421ec5",
      "m1": "بدان گفتم این ای برادر که تخت",
      "m2": "نیابد مگر مرد پیروزبخت",
      "verse_number": 46
    },
    {
      "id": "07239be0-e2d3-4582-92e2-00bb947e529a",
      "m1": "که دارد کفی راد وفر ونژاد",
      "m2": "خردمند و روشن دل و پر ز داد",
      "verse_number": 47
    },
    {
      "id": "8791f9e7-22ab-4a47-b063-16f14bea4aa0",
      "m1": "ندانم که بر تو چه خواهد رسید",
      "m2": "که اندر دلت شد خرد ناپدید",
      "verse_number": 48
    },
    {
      "id": "f30a43ea-0e48-4e31-ba9e-95ccf2948a20",
      "m1": "بدو گفت بهرام کاینست راست",
      "m2": "برین راستی پاک یزدان گواست",
      "verse_number": 49
    },
    {
      "id": "459e6b70-f124-4c74-bf19-796d653e9f78",
      "m1": "ولیکن کنون کار ازین درگذشت",
      "m2": "دل و مغز من پر ز تیمار گشت",
      "verse_number": 50
    },
    {
      "id": "f8e7848b-bf18-431d-817e-077f9f19432d",
      "m1": "اگر مه شوم گر نهم سر بمرگ",
      "m2": "که مرگ اندر آید بپولاد ترگ",
      "verse_number": 51
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 51
  }
}