{
  "id": "fc3a2d42-6530-4df3-a8d9-711231217b0b",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "86650fda-2329-4284-ac8c-4d266ab54958",
      "m1": "چوبشنید بهرام کز روزگار",
      "m2": "چه آمد بران نامور شهریار",
      "verse_number": 1
    },
    {
      "id": "812bdd81-49e6-4f07-9f22-8cb013d4913c",
      "m1": "نهادند بر چشم روشنش داغ",
      "m2": "بمرد آن چراغ دو نرگس بباغ",
      "verse_number": 2
    },
    {
      "id": "aa690172-824f-472e-b077-ffc89b9070a9",
      "m1": "پسر برنشست از بر تخت اوی",
      "m2": "بپا اندر آمد سر وبخت اوی",
      "verse_number": 3
    },
    {
      "id": "9cf08f14-5c6a-4bbf-847b-f564aa18aa12",
      "m1": "ازان ماند بهرام اندر شگفت",
      "m2": "بپژمرد واندیشه اندر گرفت",
      "verse_number": 4
    },
    {
      "id": "0f1ae7be-8865-4c24-a44d-b22da56a4b45",
      "m1": "بفرمود تا کوس بیرون برند",
      "m2": "درفش بزرگی به هامون برند",
      "verse_number": 5
    },
    {
      "id": "e7d75feb-bd83-47a3-b361-3272ded7c1ef",
      "m1": "بنه برنهاد وسپه برنشست",
      "m2": "بپیکار خسرو میان را ببست",
      "verse_number": 6
    },
    {
      "id": "aa44c1c7-9a1c-421c-957b-15b7f42f4a63",
      "m1": "سپاهی بکردار کوه روان",
      "m2": "همیراند گستاخ تا نهروان",
      "verse_number": 7
    },
    {
      "id": "eae0b181-0422-4839-9f94-0617418c7c20",
      "m1": "چوآگاه شد خسرو از کاراوی",
      "m2": "غمی گشت زان تیز بازار اوی",
      "verse_number": 8
    },
    {
      "id": "06ebf374-f5ea-4d60-b654-000e88e94333",
      "m1": "فرستاد بیدار کارآگهان",
      "m2": "که تا بازجویند کارجهان",
      "verse_number": 9
    },
    {
      "id": "b9c21e7a-3b0d-49c6-b077-03aa4d35a9b7",
      "m1": "به کارآگهان گفت راز ازنخست",
      "m2": "زلشکر همیکرد باید درست",
      "verse_number": 10
    },
    {
      "id": "fde1d1ce-a1c9-4387-8194-e074b04a3c99",
      "m1": "که بااو یکی اند لشکر به جنگ",
      "m2": "وگر گردد این کار ما با درنگ",
      "verse_number": 11
    },
    {
      "id": "80440b61-7f32-4a54-bd6a-f562a6a5406d",
      "m1": "دگر آنک بهرام در قلبگاه",
      "m2": "بود بیشتر گر میان سپاه",
      "verse_number": 12
    },
    {
      "id": "41448ad5-4c62-449a-aaf0-f13dd2622cff",
      "m1": "چگونه نشیند بهنگام بار",
      "m2": "برفتن کند هیچ رای شکار",
      "verse_number": 13
    },
    {
      "id": "9951404b-318a-4aaa-b5e6-cf5fbf62b837",
      "m1": "برفتند کارآگهان از درش",
      "m2": "نبود آگه از کار وز لشکرش",
      "verse_number": 14
    },
    {
      "id": "d1fd43a6-7705-4bc3-b663-376850729531",
      "m1": "چو رفتند و دیدند و بازآمدند",
      "m2": "نهانی بر او فراز آمدند",
      "verse_number": 15
    },
    {
      "id": "1b55476a-c9c4-4eee-9d0c-64eee3f5a196",
      "m1": "که لشکر بهرکار با اویکیست",
      "m2": "اگر نامدارست وگر کودکیست",
      "verse_number": 16
    },
    {
      "id": "ea9ebe9b-d517-473a-a56b-1c82e77db11c",
      "m1": "هرانگه که لشکر براند به راه",
      "m2": "بود یک زمان در میان سپاه",
      "verse_number": 17
    },
    {
      "id": "47ff0bd6-9009-40ea-b37e-7271c9e225fa",
      "m1": "زمانی شود بر سوی میمنه",
      "m2": "گهی بر چپ و گاه سوی بنه",
      "verse_number": 18
    },
    {
      "id": "0cce891c-22b4-4704-b09d-60223b842922",
      "m1": "همه مردم خویش دارد براز",
      "m2": "ببیگانگانشان نیاید نیاز",
      "verse_number": 19
    },
    {
      "id": "aa819916-296c-47ef-b34d-e8e6ea25b0dd",
      "m1": "بکردار شاهان نشیند ببار",
      "m2": "همان در در و دشت جوید شکار",
      "verse_number": 20
    },
    {
      "id": "dc74f49c-400f-4413-aaf2-c45a952ae793",
      "m1": "چو از رزم شاهان نراند همی",
      "m2": "همه دفتر دمنه خواند همی",
      "verse_number": 21
    },
    {
      "id": "7d656eaf-4566-479a-ad5a-12f511944fe9",
      "m1": "چنین گفت خسرو بدستور خویش",
      "m2": "که کاری درازست ما را به پیش",
      "verse_number": 22
    },
    {
      "id": "97f364cc-95d7-4de6-b29a-04d8e64937fa",
      "m1": "چو بهرام بر دشمن اسپ افکند",
      "m2": "بدریا دل اژدها بشکند",
      "verse_number": 23
    },
    {
      "id": "b89f3dc4-1009-40d7-be7d-e7cc2b15f653",
      "m1": "دگر آنک آیین شاهنشهان",
      "m2": "بیاموخت از شهریار جهان",
      "verse_number": 24
    },
    {
      "id": "8a325c99-7311-42bf-bc15-e1610790524d",
      "m1": "سیم کش کلیله است ودمنه وزیر",
      "m2": "چون او رای زن کس ندارد دبیر",
      "verse_number": 25
    },
    {
      "id": "42412b37-4187-4b85-83d9-411221ea5446",
      "m1": "ازان پس ببندوی و گستهم گفت",
      "m2": "که ما با غم و رنج گشتیم جفت",
      "verse_number": 26
    },
    {
      "id": "9ed9bc62-6ddf-4382-b2f8-f59d286a3116",
      "m1": "چوگردوی و شاپور و چون اندیان",
      "m2": "سپهدار ارمینیه رادمان",
      "verse_number": 27
    },
    {
      "id": "fc0172dd-b024-4b8c-ba81-96d2d4815e88",
      "m1": "نشستند با شاه ایران براز",
      "m2": "بزرگان فرزانه رزمساز",
      "verse_number": 28
    },
    {
      "id": "217593ca-592c-4c47-ab99-d64dd51005e0",
      "m1": "چنین گفت خسرو بدان مهتران",
      "m2": "که ای سرفرازان و جنگ آوران",
      "verse_number": 29
    },
    {
      "id": "5f3c698a-6689-4d6c-820a-db3a75589f24",
      "m1": "هرآن مغز کو را خرد روشنست",
      "m2": "زدانش یکی بر تنش جوشنست",
      "verse_number": 30
    },
    {
      "id": "1f30736f-1119-4555-ba29-60878d5953db",
      "m1": "کس آنرا نبرد مگر تیغ مرگ",
      "m2": "شود موم ازان زخم پولاد ترگ",
      "verse_number": 31
    },
    {
      "id": "ad346c3f-a358-4d47-8bf2-5dda4bd1b79f",
      "m1": "کنون من بسال ازشما کهترم",
      "m2": "برای جوانی جهان نسپرم",
      "verse_number": 32
    },
    {
      "id": "800a7e31-6634-48e3-ab41-e8f16c6b2a59",
      "m1": "بگویید تا چارهٔ کارچیست",
      "m2": "بران خستگیها پرآزار کیست",
      "verse_number": 33
    },
    {
      "id": "1addc2ba-05df-403a-a1b3-034f06cdf1e9",
      "m1": "بدو گفت موبد انوشه بدی",
      "m2": "همه مغز را فر وتوشه بدی",
      "verse_number": 34
    },
    {
      "id": "8bb588ab-756f-4101-b6f5-8a9076ac1287",
      "m1": "چوپیدا شد این راز گردنده دهر",
      "m2": "خرد را ببخشید بر چاربهر",
      "verse_number": 35
    },
    {
      "id": "ec0a54af-ce46-4ad4-beb0-5e582a01b979",
      "m1": "چونیمی ازو بهرهٔ پادشاست",
      "m2": "که فر و خرد پادشا را سزاست",
      "verse_number": 36
    },
    {
      "id": "1fcec4fc-482f-4530-8437-31fb53b34b07",
      "m1": "دگر بهرهٔ مردم پارسا",
      "m2": "سدیگر پرستنده پادشا",
      "verse_number": 37
    },
    {
      "id": "fabb52c8-df6c-433f-95ba-b555fce74130",
      "m1": "چو نزدیک باشد بشاه جهان",
      "m2": "خرد خویشتن زو ندارد نهان",
      "verse_number": 38
    },
    {
      "id": "e59b4f05-a094-43af-a08a-e01d08c33b80",
      "m1": "کنون از خرد پارهای ماند خرد",
      "m2": "که دانا ورا بهر دهقان شمرد",
      "verse_number": 39
    },
    {
      "id": "99bcfab3-9f2a-4aa9-ace8-491373e12eaa",
      "m1": "خرد نیست با مردم ناسپاس",
      "m2": "نه آنرا که او نیست یزدان شناس",
      "verse_number": 40
    },
    {
      "id": "63631165-1a02-4615-9cce-89bd1320b543",
      "m1": "اگر بشنود شهریار این سخن",
      "m2": "که گفتست بیدار مرد کهن",
      "verse_number": 41
    },
    {
      "id": "021e9662-7ec2-4015-a35a-06d398a2bcb5",
      "m1": "بدو گفت شاه این سخن گر بزر",
      "m2": "نویسم جز این نیست آیین و فر",
      "verse_number": 42
    },
    {
      "id": "1d5a18fa-4eb1-4082-b246-22d25747d5e8",
      "m1": "سخن گفتن موبدان گوهرست",
      "m2": "مرا در دل اندیشه دیگرست",
      "verse_number": 43
    },
    {
      "id": "0d5a8356-65f6-4089-8a83-88e182976979",
      "m1": "که چون این دو لشکر برابر شود",
      "m2": "سر نیزهها بر دو پیکر شود",
      "verse_number": 44
    },
    {
      "id": "202c848f-c116-4343-9bd2-8eaf662aba6c",
      "m1": "نباشد مرا ننگ کز قلبگاه",
      "m2": "برانم شوم پیش او بیسپاه",
      "verse_number": 45
    },
    {
      "id": "6cf22d87-5374-4d18-a9a3-e7e23084b9ae",
      "m1": "بخوانم به آواز بهرام را",
      "m2": "سپهدار بدنام خودکام را",
      "verse_number": 46
    },
    {
      "id": "611c436b-fd81-4140-8e46-09c732364f75",
      "m1": "یکی ز آشتی روی بنمایمش",
      "m2": "نوازمش بسیار و بستایمش",
      "verse_number": 47
    },
    {
      "id": "d7e6bb0e-3040-49bd-9f71-afe7af502b65",
      "m1": "اگر خود پذیرد سخن به بود",
      "m2": "که چون او بدرگاه بر که بود",
      "verse_number": 48
    },
    {
      "id": "79588f08-d3ed-4c4f-9b87-97cf1797eea0",
      "m1": "وگر جنگ جوید منم جنگ جوی",
      "m2": "سپه را بروی اندر آریم روی",
      "verse_number": 49
    },
    {
      "id": "d110c2ce-9ae1-4017-9c43-98d3b7cca8bc",
      "m1": "همه کاردانان بدین داستان",
      "m2": "کجا گفت گشتند همداستان",
      "verse_number": 50
    },
    {
      "id": "c0d9202e-943c-42b5-bdca-13b6e16eded6",
      "m1": "بزرگان برو آفرین خواندند",
      "m2": "ورا شهریار زمین خواندند",
      "verse_number": 51
    },
    {
      "id": "0fd9c217-7c9a-4b16-8d08-02a8b249d59f",
      "m1": "همیگفت هرکس که ای شهریار",
      "m2": "زتو دور بادا بد روزگار",
      "verse_number": 52
    },
    {
      "id": "4f4378b7-3707-4b1e-b32d-f97b35f9c9ff",
      "m1": "تو را باد پیروزی و فرهی",
      "m2": "بزرگی و دیهیم شاهنشهی",
      "verse_number": 53
    },
    {
      "id": "b5ee1c7a-ed09-4827-9392-06a296ea4603",
      "m1": "چنین گفت خسرو که این باد و بس",
      "m2": "شکست و جدایی مبیناد کس",
      "verse_number": 54
    },
    {
      "id": "b96c9435-b757-4a1c-a6e6-80674aa15a87",
      "m1": "سپه را ز بغداد بیرون کشید",
      "m2": "سراپردهٔ نو به هامون کشید",
      "verse_number": 55
    },
    {
      "id": "20bee56a-bc65-4f49-9fe6-dbf61ac381da",
      "m1": "دو لشکر چو تنگ اندر آمد به راه",
      "m2": "ازان رو سپهبد وزین روی شاه",
      "verse_number": 56
    },
    {
      "id": "fab77a00-640d-4f15-b5a8-cd7a31ce258b",
      "m1": "چو شمع جهان شد بخم اندرون",
      "m2": "بیفشاند زلف شب تیره گون",
      "verse_number": 57
    },
    {
      "id": "8518d1e8-f171-4785-ae8b-2f0c175cc87c",
      "m1": "طلایه بیامد ز هر دو سپاه",
      "m2": "که دارد ز بدخواه خود را نگاه",
      "verse_number": 58
    },
    {
      "id": "6f4fd770-edc4-4402-b116-bc5a7f464b5d",
      "m1": "چو از خنجر روز بگریخت شب",
      "m2": "همی تاخت سوزان دل و خشک لب",
      "verse_number": 59
    },
    {
      "id": "f9b9c9f3-e489-4613-8ee9-a7b9e22edcdd",
      "m1": "تبیره برآمد ز هر دو سرای",
      "m2": "بدان رزم خورشید بد رهنمای",
      "verse_number": 60
    },
    {
      "id": "c0017ec3-c672-42c1-95f4-c30d8c52d817",
      "m1": "بگستهم و بندوی فرمود شاه",
      "m2": "که تا بر نهادند ز آهن کلاه",
      "verse_number": 61
    },
    {
      "id": "fa60d6f6-a99b-4dc7-94d5-6d775dff3f7d",
      "m1": "چنین با بزرگان روشن روان",
      "m2": "همیراند تا چشمهٔ نهروان",
      "verse_number": 62
    },
    {
      "id": "f8410430-3931-4a11-be1c-12c8d4d0166e",
      "m1": "طلایه ببهرام شد ناگزیر",
      "m2": "که آمد سپه بر دو پرتاب تیر",
      "verse_number": 63
    },
    {
      "id": "9661d994-d95a-4091-ba2c-dbebf8b6ddfd",
      "m1": "چوبشنید بهرام لشکر براند",
      "m2": "جهاندیدگان را برخویش خواند",
      "verse_number": 64
    },
    {
      "id": "c417d62a-fc6d-40bd-9560-4498e12f1fb4",
      "m1": "نشست از برابلق مشک دم",
      "m2": "خنیده سرافراز رویینه سم",
      "verse_number": 65
    },
    {
      "id": "e48f5b0f-3a69-4e44-af4f-8b7722762285",
      "m1": "سلیحش یکی هندوی تیغ بود",
      "m2": "که درزخم چون آتش میغ بود",
      "verse_number": 66
    },
    {
      "id": "82237654-8b81-4cf0-9e68-459c65843bda",
      "m1": "چوبرق درفشان همیراند اسپ",
      "m2": "بدست چپش ریمن آذرگشسپ",
      "verse_number": 67
    },
    {
      "id": "2e6f45ff-5e72-4f80-a3c5-ab3da1ff05c3",
      "m1": "چو آیین گشسپ و یلان سینه نیز",
      "m2": "برفتند پرکینه و پرستیز",
      "verse_number": 68
    },
    {
      "id": "6c05dfa2-b892-42f7-b713-29ad29134dd9",
      "m1": "سه ترک دلاور ز خاقانیان",
      "m2": "بران کین بهرام بسته میان",
      "verse_number": 69
    },
    {
      "id": "f2a857ab-ab49-47ca-aab4-2ab43bb4d4dc",
      "m1": "پذیرفته هر سه که چون روی شاه",
      "m2": "ببینیم دور ازمیان سپاه",
      "verse_number": 70
    },
    {
      "id": "f8523d06-540f-4bbc-bd67-96ec921126b3",
      "m1": "اگر بسته گر کشته او را برت",
      "m2": "بیاریم و آسوده شد لشکرت",
      "verse_number": 71
    },
    {
      "id": "94a6a6e9-30fc-4cbf-8a27-5575505adb2c",
      "m1": "ز یک روی خسرو دگر پهلوان",
      "m2": "میان اندرون نهروان روان",
      "verse_number": 72
    },
    {
      "id": "9b5d9aad-8feb-4be1-87f5-995d4b49887e",
      "m1": "نظاره بران از دو رویه سپاه",
      "m2": "که تا پهلوان چون رود نزد شاه",
      "verse_number": 73
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 73
  }
}