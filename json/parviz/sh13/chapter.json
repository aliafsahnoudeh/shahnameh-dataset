{
  "id": "e3fa9965-18de-4a7e-91b0-2b149c61e922",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "b50b8c9a-7ef1-4abc-9333-a745df270800",
      "m1": "چو خورشید خنجر کشید از نیام",
      "m2": "پدید آمد آن مطرف زردفام",
      "verse_number": 1
    },
    {
      "id": "ce1b33cb-34e0-4f9a-ab1c-7d32c8470e83",
      "m1": "فرستاد و گردنکشان را بخواند",
      "m2": "برتخت شاهی به زانو نشاند",
      "verse_number": 2
    },
    {
      "id": "480d7fa5-9d37-4cb4-bb11-80af55862de5",
      "m1": "بهرجای کرسی زرین نهاد",
      "m2": "چوشاهان پیروز بنشست شاد",
      "verse_number": 3
    },
    {
      "id": "caa82934-7d9c-4512-8f23-728295d27906",
      "m1": "چنین گفت زان پس به بانگ بلند",
      "m2": "که هرکس که هست ازشما ارجمند",
      "verse_number": 4
    },
    {
      "id": "ed321660-6718-40dc-8f26-5aac3431c952",
      "m1": "ز شاهان ز ضحاک بتر کسی",
      "m2": "نیامد پدیدار بجویی بسی",
      "verse_number": 5
    },
    {
      "id": "8a98ff0e-f4b6-4fa4-8868-e2addc7dbad8",
      "m1": "که از بهر شاهی پدر را بکشت",
      "m2": "وزان کشتن ایرانش آمد بمشت",
      "verse_number": 6
    },
    {
      "id": "9a26fdb4-0323-4819-8fb2-9ed41ea9aa87",
      "m1": "دگر خسرو آن مرد بیداد و شوم",
      "m2": "پدر را بکشت آنگهی شد بروم",
      "verse_number": 7
    },
    {
      "id": "37ec438d-fe73-4a01-a202-9cea981ca375",
      "m1": "کنون ناپدیدست اندر جهان",
      "m2": "یکی نامداری ز تخت مهان",
      "verse_number": 8
    },
    {
      "id": "c8ef4a52-2089-4e4b-90d9-f9037af342cc",
      "m1": "که زیبا بود بخشش و بخت را",
      "m2": "کلاه و کمر بستن وتخت را",
      "verse_number": 9
    },
    {
      "id": "fcc7c9aa-2a27-46a4-ade6-893efb9feeda",
      "m1": "که دارید که اکنون ببندد میان",
      "m2": "بجا آورد رسم و راه کیان",
      "verse_number": 10
    },
    {
      "id": "939c6543-07d1-49ef-8eb6-8835e0bbeb40",
      "m1": "بدارندهٔ آفتاب بلند",
      "m2": "که باشم شما را بدین یارمند",
      "verse_number": 11
    },
    {
      "id": "93637c94-906f-487d-9e6d-4d97335f7156",
      "m1": "شنیدند گردنکشان این سخن",
      "m2": "که آن نامور مهتر افکند بن",
      "verse_number": 12
    },
    {
      "id": "bc21c956-30b7-4a07-9de2-3dbbe69d40be",
      "m1": "نپیچید کس دل ز گفتار راست",
      "m2": "یکی پیرتر بود بر پای خاست",
      "verse_number": 13
    },
    {
      "id": "8ad8ebf0-8ab2-4b0c-bfdc-19325fc7a5bf",
      "m1": "کجا نام او بود شهران گراز",
      "m2": "گوی پیرسر مهتری دیریاز",
      "verse_number": 14
    },
    {
      "id": "c675a2de-7d9d-4ec0-bb6a-4f90e1237564",
      "m1": "چنین گفت کای نامدار بلند",
      "m2": "توی در جهان تابوی سودمند",
      "verse_number": 15
    },
    {
      "id": "cd8c2639-ddc2-4046-9637-8d1a777eec7c",
      "m1": "بدی گر نبودی جز از ساوه شاه",
      "m2": "که آمد بدین مرز ما با سپاه",
      "verse_number": 16
    },
    {
      "id": "818e6525-053e-435c-8bf3-0eb9858f5e40",
      "m1": "ز آزادگان بندگان خواست کرد",
      "m2": "کجا در جهانش نبد هم نبرد",
      "verse_number": 17
    },
    {
      "id": "81842c7f-a152-4864-9f0d-bc0a7911ebef",
      "m1": "ز گیتی بمردی تو بستی میان",
      "m2": "که آن رنج بگذشت ز ایرانیان",
      "verse_number": 18
    },
    {
      "id": "8751634b-5d88-4823-ab6b-efe6d09d070f",
      "m1": "سپه چاربار از یلان صدهزار",
      "m2": "همه گرد و شایستهٔ کارزار",
      "verse_number": 19
    },
    {
      "id": "0726dfff-dff4-4bd6-9ad1-bd3cc6cf345c",
      "m1": "بیک چوبه تیر تو گشتند باز",
      "m2": "برآسود ایران ز گرم و گداز",
      "verse_number": 20
    },
    {
      "id": "cef08f8e-f439-4ee6-a799-73999a6d939c",
      "m1": "کنون تخت ایران سزاوار تست",
      "m2": "برین برگوا بخت بیدارتست",
      "verse_number": 21
    },
    {
      "id": "fffc8ad8-aa54-414b-bac2-f88d8d3dd614",
      "m1": "کسی کو بپیچد ز فرمان ما",
      "m2": "وگر دور ماند ز پیمان ما",
      "verse_number": 22
    },
    {
      "id": "45f8dd7d-c5ea-492f-b859-4b8fcae0de6a",
      "m1": "بفرمانش آریم اگر چه گوست",
      "m2": "و گر داستان را همه خسروست",
      "verse_number": 23
    },
    {
      "id": "7a70d4bb-452e-4993-a4fa-979f2a2ffbdf",
      "m1": "بگفت این و بنشست بر جای خویش",
      "m2": "خراسان سپهبد بیامد به پیش",
      "verse_number": 24
    },
    {
      "id": "e6462a92-ba08-447a-8bc4-fb02a6cd308f",
      "m1": "چنین گفت کاین پیر دانش پژوه",
      "m2": "که چندین سخن گفت پیش گروه",
      "verse_number": 25
    },
    {
      "id": "b9669d9c-4526-483a-bee8-e3d98a33044c",
      "m1": "بگویم که او از چه گفت این سخن",
      "m2": "جهانجوی و داننده مرد کهن",
      "verse_number": 26
    },
    {
      "id": "c7c681d8-76ee-4ff1-8b25-7df259cd846a",
      "m1": "که این نیکویها ز تو یاد کرد",
      "m2": "دل انجمن زین سخن شاد کرد",
      "verse_number": 27
    },
    {
      "id": "e64c2dba-a37e-411c-bdea-afaaf668144a",
      "m1": "ولیکن یکی داستانست نغز",
      "m2": "اگر بشنود مردم پاک مغز",
      "verse_number": 28
    },
    {
      "id": "03248966-d860-4d5e-87d9-efb57bbedef9",
      "m1": "که زر دشت گوید باستا و زند",
      "m2": "که هرکس که از کردگاربلند",
      "verse_number": 29
    },
    {
      "id": "6a5baa58-071b-4b90-9a1d-5d54e034dfb2",
      "m1": "بپیچد بیک سال پندش دهید",
      "m2": "همان مایهٔ سودمندش دهید",
      "verse_number": 30
    },
    {
      "id": "6988002c-7f71-4c4b-90f3-c8f4032e86c2",
      "m1": "سرسال اگر بازناید به راه",
      "m2": "ببایدش کشتن بفرمان شاه",
      "verse_number": 31
    },
    {
      "id": "b84ed9c5-5d7b-48ce-9eaf-abecfca2e840",
      "m1": "چو بر دادگر شاه دشمن شود",
      "m2": "سرش زود باید که بیتن شود",
      "verse_number": 32
    },
    {
      "id": "d53675e2-5033-45dd-a001-06f5feeb2d17",
      "m1": "خراسان بگفت این و لب راببست",
      "m2": "بیامد بجایی که بودش نشست",
      "verse_number": 33
    },
    {
      "id": "6cb05f5d-1b2c-4f09-a853-c721b5f71088",
      "m1": "ازان پس فرخ زاد برپای خاست",
      "m2": "ازان انجمن سر برآورد راست",
      "verse_number": 34
    },
    {
      "id": "9570f814-3b88-4824-8efa-95aca1b6aabb",
      "m1": "چنین گفت کای مهتر سودمند",
      "m2": "سخن گفتن داد به گر پسند",
      "verse_number": 35
    },
    {
      "id": "abdb1ea4-f1cb-4c5c-b921-47faa12f7991",
      "m1": "اگر داد بهتر بود کس مباد",
      "m2": "که باشد به گفتار بیداد شاد",
      "verse_number": 36
    },
    {
      "id": "940ba467-82ec-4358-ba90-b1c0163375ed",
      "m1": "ببهرام گوید که نوشه بدی",
      "m2": "جهان را بدیدار توشه بدی",
      "verse_number": 37
    },
    {
      "id": "db25fcad-f76e-4927-8f52-bce171fe087c",
      "m1": "اگر ناپسندست گفتار ما",
      "m2": "بدین نیست پیروزگر یارما",
      "verse_number": 38
    },
    {
      "id": "7e5ecd48-ce14-4c60-801c-3c86a7af5371",
      "m1": "انوشه بدی شاد تاجاودان",
      "m2": "زتو دور دست و زبان بدان",
      "verse_number": 39
    },
    {
      "id": "e552819f-76c7-48c9-98b7-fa6e840c6f69",
      "m1": "بگفت این و بنشست مرد دلیر",
      "m2": "خزروان خسرو بیامد چو شیر",
      "verse_number": 40
    },
    {
      "id": "f0f470cd-53ea-40f0-a5a5-d229fc105987",
      "m1": "بدو گفت اکنون که چندین سخن",
      "m2": "سراینده برنا و مرد کهن",
      "verse_number": 41
    },
    {
      "id": "4a49a308-1cf2-4501-a37c-b82763b7caf6",
      "m1": "سرانجام اگر راه جویی بداد",
      "m2": "هیونی برافگن بکردار باد",
      "verse_number": 42
    },
    {
      "id": "78fe298e-d817-4763-9fe3-d84ee4758b8e",
      "m1": "ممان دیر تا خسرو سرفراز",
      "m2": "بکوبد بنزد تو راه دراز",
      "verse_number": 43
    },
    {
      "id": "64abc09d-10d0-4ef0-bf46-96afb9c78c63",
      "m1": "ز کار گذشته به پوزش گرای",
      "m2": "سوی تخت گستاخ مگذار پای",
      "verse_number": 44
    },
    {
      "id": "638402bf-8c59-47ac-a4dd-945d5299f7b8",
      "m1": "که تا زنده باشد جهاندار شاه",
      "m2": "نباشد سپهبد سزاوار گاه",
      "verse_number": 45
    },
    {
      "id": "42d54fbc-9e78-49c4-813a-9da16c0bf4df",
      "m1": "وگر بیم داری ز خسرو به دل",
      "m2": "پی از پارس وز طیسفون برگسل",
      "verse_number": 46
    },
    {
      "id": "d9cabc0c-6ab5-407f-bf8f-05dd694a89a7",
      "m1": "بشهر خراسان تن آسان بزی",
      "m2": "که آسانی و مهتری را سزی",
      "verse_number": 47
    },
    {
      "id": "700af1f8-e31c-4c4c-b2a4-61e6ac59c15c",
      "m1": "به پوزش یک اندر دگر نامه ساز",
      "m2": "مگر خسرو آید برای تو باز",
      "verse_number": 48
    },
    {
      "id": "83beee1c-a8c3-4055-8f78-5dd676ef8161",
      "m1": "نه برداشت خسرو پی از جای خویش",
      "m2": "کجا زاد فرخ نهد پای پیش",
      "verse_number": 49
    },
    {
      "id": "bad18584-d4dc-4f0e-b691-bc45542422c4",
      "m1": "سخن گفت پس زاد فرخ بداد",
      "m2": "کهای نامداران فرخ نژاد",
      "verse_number": 50
    },
    {
      "id": "c45ca243-ef30-4fe6-9c06-71c5a426e8c4",
      "m1": "شنیدم سخن گفتن مهتران",
      "m2": "که هستند ز ایران گزیده سران",
      "verse_number": 51
    },
    {
      "id": "ffd9a391-13e6-4eaa-a3b3-8595568e72f8",
      "m1": "نخستین سخن گفتن بنده وار",
      "m2": "که تا پهلوانی شود شهریار",
      "verse_number": 52
    },
    {
      "id": "192c5f0f-8ee9-41a3-91d0-14885bc3f4cd",
      "m1": "خردمند نپسندد این گفت وگوی",
      "m2": "کزان کم شود مرد راآب روی",
      "verse_number": 53
    },
    {
      "id": "2fa9bdb0-e6c8-4867-9675-835e7dd4bfe8",
      "m1": "خراسان سخن برمنش وار گفت",
      "m2": "نگویم که آن با خرد بود جفت",
      "verse_number": 54
    },
    {
      "id": "86ccf066-c7fe-49df-bfae-1f64e273927a",
      "m1": "فرخ زاد بفزود گفتار تند",
      "m2": "دل مردم پرخرد کرد کند",
      "verse_number": 55
    },
    {
      "id": "f82a07fb-070d-40ce-82eb-ad537c86a1e2",
      "m1": "چهارم خزروان سالاربود",
      "m2": "که گفتار او با خرد یاربود",
      "verse_number": 56
    },
    {
      "id": "a2754ca1-791a-4b1a-ba8d-0df2b2a5a4a4",
      "m1": "که تا آفرید این جهان کردگار",
      "m2": "پدید آمد این گردش روزگار",
      "verse_number": 57
    },
    {
      "id": "8f6c1e3e-f068-4052-966e-554205229c14",
      "m1": "ز ضحاک تازی نخست اندرآی",
      "m2": "که بیدادگر بود و ناپاک رای",
      "verse_number": 58
    },
    {
      "id": "f4abd664-3669-4f22-9b6a-38b0ef41d28a",
      "m1": "که جمشید برتر منش را بکشت",
      "m2": "به بیداد بگرفت گیتی بمشت",
      "verse_number": 59
    },
    {
      "id": "ed6d772e-2b9e-4733-8c5a-f058907231e4",
      "m1": "پر از درد دیدم دل پارسا",
      "m2": "که اندر جهان دیو بد پادشا",
      "verse_number": 60
    },
    {
      "id": "f6c624a6-dcc4-432e-8c87-ba47650b20f9",
      "m1": "دگر آنک بد گوهر افراسیاب",
      "m2": "ز توران بدانگونه بگذاشت آب",
      "verse_number": 61
    },
    {
      "id": "0ecf7594-5ffd-4f61-a1b0-e86770b36e1d",
      "m1": "بزاری سر نوذر نامدار",
      "m2": "بشمشیر ببرید و برگشت کار",
      "verse_number": 62
    },
    {
      "id": "0b90433f-1f12-4de4-9165-f50a33391187",
      "m1": "سدیگر سکندر که آمد ز روم",
      "m2": "به ایران و ویران شد این مرز وبوم",
      "verse_number": 63
    },
    {
      "id": "7c27625b-bfb7-4661-9876-c98aa993fbb3",
      "m1": "چو دارای شمشیر زن را بکشت",
      "m2": "خور و خواب ایرانیان شد درشت",
      "verse_number": 64
    },
    {
      "id": "78a54a68-388e-4c27-8c41-b48a025fc8a8",
      "m1": "چهارم چو ناپاک دل خوشنواز",
      "m2": "که گم کرد زین بوم و بر نام و ناز",
      "verse_number": 65
    },
    {
      "id": "3a88cd31-c506-4863-aeeb-3ca3e0b3dd8c",
      "m1": "چو پیروز شاهی بلند اختری",
      "m2": "جهاندار وز نامداران سری",
      "verse_number": 66
    },
    {
      "id": "e045a729-279b-4128-a427-33f9af38e5f1",
      "m1": "بکشتند هیتالیان ناگهان",
      "m2": "نگون شد سرتخت شاه جهان",
      "verse_number": 67
    },
    {
      "id": "bbfc1354-162c-45ab-94ba-e529b52e528d",
      "m1": "کس اندر جهان این شگفتی ندید",
      "m2": "که اکنون بنوی به ایران رسید",
      "verse_number": 68
    },
    {
      "id": "2ff24079-82ea-4e24-b06c-d388dc15ec23",
      "m1": "که بگریخت شاهی چوخسرو زگاه",
      "m2": "سوی دشمنان شد ز دست سپاه",
      "verse_number": 69
    },
    {
      "id": "7a3bf27e-ae62-4c69-9ec6-b20e8aa8ca10",
      "m1": "بگفت این و بنشست گریان بدرد",
      "m2": "ز گفتار او گشت بهرام زرد",
      "verse_number": 70
    },
    {
      "id": "9c77effa-5151-4e05-9486-afa1d297bcca",
      "m1": "جهاندیده سنباد برپای جست",
      "m2": "میان بسته وتیغ هندی بدست",
      "verse_number": 71
    },
    {
      "id": "db544bcd-2d7d-42aa-a23d-df2c56aa6f3e",
      "m1": "چنین گفت کاین نامور پهلوان",
      "m2": "بزرگست و با داد و روشن روان",
      "verse_number": 72
    },
    {
      "id": "e7418235-5c22-4d6a-9d4b-8f7e7c43f2cb",
      "m1": "کنون تاکسی از نژادکیان",
      "m2": "بیاید ببندد کمر بر میان",
      "verse_number": 73
    },
    {
      "id": "b347e641-90f4-4d1a-b934-35155df3866d",
      "m1": "هم آن به که این برنشیند بتخت",
      "m2": "که گردست و جنگاور و نیک بخت",
      "verse_number": 74
    },
    {
      "id": "03585df1-494f-40eb-86b4-e3db481cdc42",
      "m1": "سرجنگیان کاین سخنها شنید",
      "m2": "بزد دست و تیغ از میان برکشید",
      "verse_number": 75
    },
    {
      "id": "5afcf750-8c58-44c3-a94d-b2225469cbd5",
      "m1": "چنین گفت کز تخم شاهان زنی",
      "m2": "اگر باز یابیم در بر زنی",
      "verse_number": 76
    },
    {
      "id": "7f8fece1-41a0-4d8a-ab74-f5a0bd1be077",
      "m1": "ببرم سرش را بشمشیر تیز",
      "m2": "زجانش برآرم دم رستخیز",
      "verse_number": 77
    },
    {
      "id": "27ff36ec-d991-4c73-b0f1-bbf28b537549",
      "m1": "نمانم که کس تاجداری کند",
      "m2": "میان سواران سورای کند",
      "verse_number": 78
    },
    {
      "id": "f60ab44b-326e-4058-80fe-9a0c6f98c5e1",
      "m1": "چوبشنید بابوی گرد ارمنی",
      "m2": "که سالار ناپاک کرد آن منی",
      "verse_number": 79
    },
    {
      "id": "eee61052-aa1e-4243-869f-6c2312b5a903",
      "m1": "کشیدند شمشیر و برخاستند",
      "m2": "یکی نو سخن دیگر آراستند",
      "verse_number": 80
    },
    {
      "id": "60ec71af-faca-4ec8-a6ed-f9f1ce687043",
      "m1": "که بهرام شاهست و ماکهتریم",
      "m2": "سر دشمنان را بپی بسپریم",
      "verse_number": 81
    },
    {
      "id": "7670c5c5-0bd0-409f-a5d6-b2e3a652685c",
      "m1": "کشیده چو بهرام شمشیر دید",
      "m2": "خردمندی و راستی برگزید",
      "verse_number": 82
    },
    {
      "id": "784e595c-35ec-4174-b17d-65f7470867de",
      "m1": "چنین گفت کانکو ز جای نشست",
      "m2": "برآید بیازد به شمشیر دست",
      "verse_number": 83
    },
    {
      "id": "3ef45e40-a1a3-4e7f-a834-41fb89503480",
      "m1": "ببرم هم اندر زمان دست اوی",
      "m2": "هشیوار گردد سر مست اوی",
      "verse_number": 84
    },
    {
      "id": "f743acc8-7fd8-4d7c-a6fe-db3efe06c3e9",
      "m1": "بگفت این و از پیش آزادگان",
      "m2": "بیامد سوی گلشن شادگان",
      "verse_number": 85
    },
    {
      "id": "e5b962be-8177-453d-aa7f-25c5a62ada81",
      "m1": "پراگنده گشت آن بزرگ انجمن",
      "m2": "همه رخ پر آژنگ و دل پرشکن",
      "verse_number": 86
    }
  ],
