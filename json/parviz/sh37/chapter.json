{
  "id": "affaeec8-4fde-4476-b18e-4d0051501de1",
  "title": "بخش ۳۷",
  "verses": [
    {
      "id": "b7a937dc-3a3e-4883-83da-71c8a18e9338",
      "m1": "بخراد برزین بفرمود شاه",
      "m2": "که رو عرض گه ساز ودیوان بخواه",
      "verse_number": 1
    },
    {
      "id": "6891f7f5-35b5-4049-ac9a-78bbe3890c6a",
      "m1": "همه لشکر رومیان عرض کن",
      "m2": "هر آنکس که هستند نوگر کهن",
      "verse_number": 2
    },
    {
      "id": "c0ab041b-90c8-48b0-82f3-fbce1fd74c7e",
      "m1": "درمشان بده رومیان را زگنج",
      "m2": "بدادن نباید که بینند رنج",
      "verse_number": 3
    },
    {
      "id": "9d17db11-e425-455f-a63c-344b121150b9",
      "m1": "کسی کو به خلعت سزاوار بود",
      "m2": "کجا روز جنگ از در کار بود",
      "verse_number": 4
    },
    {
      "id": "254a33a5-8bc4-415b-adfe-6497bcc7e963",
      "m1": "بفرمود تا خلعت آراستند",
      "m2": "ز در اسپ پرمایگان خواستند",
      "verse_number": 5
    },
    {
      "id": "fed3f35b-4943-487f-8167-d0f77855d85a",
      "m1": "نیاطوس را داد چندان گهر",
      "m2": "چه اسپ و پرستار و زرین کمر",
      "verse_number": 6
    },
    {
      "id": "91470dbc-d530-4d98-92ff-677e85ee6087",
      "m1": "کز اندازه هدیه برتر گذاشت",
      "m2": "سرش را ز پر مایگان برفراشت",
      "verse_number": 7
    },
    {
      "id": "36159cf7-ac00-42af-8504-1552d6cae585",
      "m1": "هر آن شهرکز روم بستد قباد",
      "m2": "چه هرمز چه کسری فرخ نژاد",
      "verse_number": 8
    },
    {
      "id": "1fe4aa2a-e167-4778-9add-b2c639059ce2",
      "m1": "نیاطوس را داد و بنوشت عهد",
      "m2": "بران جام حنظل پراگند شهد",
      "verse_number": 9
    },
    {
      "id": "cb0f9cf4-d395-4cc8-a131-42020fc6365b",
      "m1": "برفتند پس رومیان سوی روم",
      "m2": "بدان مرز آباد و آباد بوم",
      "verse_number": 10
    },
    {
      "id": "37f1b794-d334-485c-abd7-6816a320d945",
      "m1": "دگر هفته برداشت با ده سوار",
      "m2": "که بودند بینا دل و نامدار",
      "verse_number": 11
    },
    {
      "id": "3546fe88-a350-41a7-b4b2-6aeded15aaa6",
      "m1": "ز لشکر گه آمد به آذرگشسپ",
      "m2": "به گنبد نگه کرد و بگذاشت اسپ",
      "verse_number": 12
    },
    {
      "id": "0926e8ab-9c9f-4200-86fe-af0806648534",
      "m1": "پیاده همیرفت و دیده پر آب",
      "m2": "به زردی دو رخساره چون آفتاب",
      "verse_number": 13
    },
    {
      "id": "ec5a5d17-5b7d-42cf-9829-ebee3c71c9b5",
      "m1": "چو از دربه نزدیک آتش رسید",
      "m2": "شد از آب دیده رخش ناپدید",
      "verse_number": 14
    },
    {
      "id": "f61610c3-04e0-4126-874b-bb9e53966faa",
      "m1": "دو هفته همیخواند استا وزند",
      "m2": "همیگشت بر گرد آذر نژند",
      "verse_number": 15
    },
    {
      "id": "5a606444-de33-4a47-90f1-c5d2b27192d6",
      "m1": "بهشتم بیامد ز آتشکده",
      "m2": "چو نزدیک شد روزگار سده",
      "verse_number": 16
    },
    {
      "id": "33b72b53-d933-40c8-93d3-2b9d42082b1c",
      "m1": "به آتش بداد آنچ پذیرفته بود",
      "m2": "سخن هرچ پیش ردان گفته بود",
      "verse_number": 17
    },
    {
      "id": "792688af-c848-4258-8bba-3574a279775f",
      "m1": "ز زرین و سیمین گوهرنگار",
      "m2": "ز دینار وز گوهر شاهوار",
      "verse_number": 18
    },
    {
      "id": "a9ae5bc1-b925-42e2-a4ea-90fff24725a6",
      "m1": "به درویش بخشید گنج درم",
      "m2": "نماند اندران بوم و برکس دژم",
      "verse_number": 19
    },
    {
      "id": "11230adc-5df7-4796-9014-c3a09b00b0a5",
      "m1": "وزان جایگه شد باندیو شهر",
      "m2": "که بردارد از روز شادیش بهر",
      "verse_number": 20
    },
    {
      "id": "d5ac39ae-f76f-4315-bc0e-c16e90b63be9",
      "m1": "کجا کشور شورستان بود مرز",
      "m2": "کسی خاک او راندانست ارز",
      "verse_number": 21
    },
    {
      "id": "1280d686-9671-4cae-acb8-41ced6e07aa5",
      "m1": "به ایوان که نوشین روان کرده بود",
      "m2": "بسی روزگار اندر آن برده بود",
      "verse_number": 22
    },
    {
      "id": "4e86640d-44c5-4e88-81f0-fadf201de070",
      "m1": "گرانمایه کاخی بیاراستند",
      "m2": "همان تخت زرین به پیراستند",
      "verse_number": 23
    },
    {
      "id": "333cb365-2181-4d3a-845a-49280d9246f9",
      "m1": "بیامد به تخت پدر برنشست",
      "m2": "جهاندار پیروز یزدان پرست",
      "verse_number": 24
    },
    {
      "id": "b1d4e041-f6d2-49a7-9757-1e2876f57bcd",
      "m1": "بفرمود تا پیش او شد دبیر",
      "m2": "همان راهبر موبد تیزویر",
      "verse_number": 25
    },
    {
      "id": "16b2a8fa-7a3a-4992-9939-314b38fb809c",
      "m1": "نوشتند منشور ایرانیان",
      "m2": "برسم بزرگان و فرخ مهان",
      "verse_number": 26
    },
    {
      "id": "54cf195b-59bd-4d87-8663-970b9b9846bf",
      "m1": "بدان کار بندوی بد کدخدای",
      "m2": "جهاندیده و راد و فرخندهرای",
      "verse_number": 27
    },
    {
      "id": "f361e3ae-2ef2-4fc8-b73d-e7d674c6c166",
      "m1": "خراسان سراسر به گستهم داد",
      "m2": "بفرمود تا نو کند رسم وداد",
      "verse_number": 28
    },
    {
      "id": "80cedd4e-7f22-4182-ba83-d7ce4af8e9b9",
      "m1": "بهرکار دستور بد برزمهر",
      "m2": "دبیری جهاندیده و خوب چهر",
      "verse_number": 29
    },
    {
      "id": "d727b8d3-8b92-45a8-9002-4a7a96af6fae",
      "m1": "چو بر کام او گشت گردنده چرخ",
      "m2": "ببخشید داراب گرد و صطرخ",
      "verse_number": 30
    },
    {
      "id": "1fbf107d-c5cf-45de-ab5c-1a53ac5bad82",
      "m1": "به منشور برمهر زرین نهاد",
      "m2": "یکی درکف رام برزین نهاد",
      "verse_number": 31
    },
    {
      "id": "f1bebbe1-18ec-4c44-9933-4044bdd5e4bc",
      "m1": "بفرمود تا نزد شاپور برد",
      "m2": "پرستنده و خلعت او را سپرد",
      "verse_number": 32
    },
    {
      "id": "d3f37fc2-4a63-4c52-b3ed-9eea4c8ebdc0",
      "m1": "دگر مهر خسرو سوی اندیان",
      "m2": "بفرمود بردن برسم کیان",
      "verse_number": 33
    },
    {
      "id": "285e9f0a-a240-443a-8d4d-2486d029d7e9",
      "m1": "دگر کشوری را بگردوی داد",
      "m2": "بران نامه بر مهر زرین نهاد",
      "verse_number": 34
    },
    {
      "id": "a7d81828-8cd4-4e5a-93f6-674dc9f92e1e",
      "m1": "ببالوی داد آن زمان شهر چاچ",
      "m2": "فرستاد منشور با تخت عاج",
      "verse_number": 35
    },
    {
      "id": "57ea603c-a4ee-4f03-bb85-92cd61cecff1",
      "m1": "کلید در گنجها بر شمرد",
      "m2": "سراسر بپور تخواره سپرد",
      "verse_number": 36
    },
    {
      "id": "2a864217-1cee-4f83-bf2c-d69b5c4f1833",
      "m1": "بفرمود تا هر که مهتر بدند",
      "m2": "به فرمان خراد برزین شدند",
      "verse_number": 37
    },
    {
      "id": "3cbabfbe-2632-430e-b5ba-6e21f1b948d0",
      "m1": "به گیتی رونده بود کام او",
      "m2": "به منشورها بر بود نام او",
      "verse_number": 38
    },
    {
      "id": "2ea9f505-f421-46aa-831b-97b125156e6d",
      "m1": "ز لشکر هر آنکس که هنگام کار",
      "m2": "بماندند با نامور شهریار",
      "verse_number": 39
    },
    {
      "id": "1474deca-9b95-486a-a03a-66b429d303f0",
      "m1": "همی خلعت خسروی دادشان",
      "m2": "به شاهی به مرزی فرستادشان",
      "verse_number": 40
    },
    {
      "id": "5c3fd411-8f57-4825-acbb-0cb2bb23f3c7",
      "m1": "همیگشت گویا منادیگری",
      "m2": "خوش آواز و بیدار دل مهتری",
      "verse_number": 41
    },
    {
      "id": "55465d8d-5e08-4eeb-a0aa-81e00fc0a017",
      "m1": "که ای زیردستان شاه جهان",
      "m2": "مخوانید جز آفرین در نهان",
      "verse_number": 42
    },
    {
      "id": "9a357cb0-5296-451b-843f-aa326ca7fcfe",
      "m1": "مجویید کین و مریزید خون",
      "m2": "مباشید بر کار بد رهنمون",
      "verse_number": 43
    },
    {
      "id": "f195ac13-30b8-40e8-9ec1-f2b6538b6816",
      "m1": "گر از زیردستان بنالد کسی",
      "m2": "گر از لشکری رنج یابد بسی",
      "verse_number": 44
    },
    {
      "id": "63f220dd-788d-45c4-b76e-b24b86780e37",
      "m1": "نیابد ستمگاره جز دار جای",
      "m2": "همان رنج و آتش بدیگر سرای",
      "verse_number": 45
    },
    {
      "id": "0c4c8bef-a5ce-4bdb-81ae-cefa3c91c140",
      "m1": "همه پادشاهند برگنج خویش",
      "m2": "کسی راکه گرد آمد از رنج خویش",
      "verse_number": 46
    },
    {
      "id": "6be5816d-8c91-45b7-b459-5711607cd004",
      "m1": "خورید و دهید آنک دارید چیز",
      "m2": "همان کز شماهست درویش نیز",
      "verse_number": 47
    },
    {
      "id": "093ea479-325d-4f99-9a52-2eb90c4c1da5",
      "m1": "چو باید خورش بامداد پگاه",
      "m2": "سه من می بیابد ز گنجور شاه",
      "verse_number": 48
    },
    {
      "id": "738c2c9d-df19-4b58-a958-782a170e10d1",
      "m1": "به پیمان که خواند بران آفرین",
      "m2": "که کوشد که آباد دارد زمین",
      "verse_number": 49
    },
    {
      "id": "58c2f518-4019-43af-b22d-ba041a4f5536",
      "m1": "گر ایدون که زین سان بود پادشا",
      "m2": "به از دانشومند ناپارسا",
      "verse_number": 50
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 50
  },
