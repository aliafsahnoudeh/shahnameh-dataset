{
  "id": "16f7d7c9-2034-4ec8-b5e8-621524fc2da7",
  "title": "بخش ۱۹",
  "verses": [
    {
      "id": "05663e06-a26d-4ed1-91b5-2bad033482c8",
      "m1": "چوآمد بران شارستان شهریار",
      "m2": "سوار آمد از قیصر نامدار",
      "verse_number": 1
    },
    {
      "id": "1dad7c13-0bed-4171-a3db-d75d7b5b01c4",
      "m1": "که چیزی کزین مرز باید بخواه",
      "m2": "مدار آرزو را ز شاهان نگاه",
      "verse_number": 2
    },
    {
      "id": "855005a9-d4e6-4a89-86fc-1aa731e8f2ad",
      "m1": "که هرچند این پادشاهی مراست",
      "m2": "تو را با تن خویش داریم راست",
      "verse_number": 3
    },
    {
      "id": "f900d839-84f9-4ba1-8f23-3d4a6c97f18a",
      "m1": "بران شارستان ایمن و شاد باش",
      "m2": "ز هر بد که اندیشی آزاد باش",
      "verse_number": 4
    },
    {
      "id": "d7612703-1b8c-488e-9598-f32c7676dc0a",
      "m1": "همه روم یکسر تو را کهترند",
      "m2": "اگر چند گردنکش و مهترند",
      "verse_number": 5
    },
    {
      "id": "077945cc-6a98-4883-8e5e-2f34bad95afa",
      "m1": "تو را تا نسازم سلیح و سپاه",
      "m2": "نجویم خور و خواب و آرام گاه",
      "verse_number": 6
    },
    {
      "id": "0f1572ea-0007-45df-8e5f-4abafda39586",
      "m1": "چو بشنید خسرو بدان شاد گشت",
      "m2": "روانش از اندیشه آزاد گشت",
      "verse_number": 7
    },
    {
      "id": "1120f664-107f-40c7-bba0-180d4a0ee0b0",
      "m1": "بفرمود گستهم و بالوی را",
      "m2": "همان اندیان جهانجوی را",
      "verse_number": 8
    },
    {
      "id": "8ea3efa5-3e37-4e13-b67f-e01a898d2d4c",
      "m1": "بخراد برزین وشاپور شیر",
      "m2": "چنین گفت پس شهریار دلیر",
      "verse_number": 9
    },
    {
      "id": "7f038217-4bce-4d7c-8ab2-f4470ea52b99",
      "m1": "که اسپان چو روشن شود زین کنید",
      "m2": "ببالای آن زین زرین کنید",
      "verse_number": 10
    },
    {
      "id": "c7ad1612-e221-4bd7-b8f2-041fc25d5886",
      "m1": "بپوشید زربفت چینی قبای",
      "m2": "همه یک دلانید و پاکیزه رای",
      "verse_number": 11
    },
    {
      "id": "6ebb3331-78a0-4ad1-9523-d0e8596fa067",
      "m1": "ازین شارستان سوی قیصر شوید",
      "m2": "بگویید و گفتار او بشنوید",
      "verse_number": 12
    },
    {
      "id": "3becd39c-a605-45b4-b874-f3df5d27a241",
      "m1": "خردمند باشید وروشن روان",
      "m2": "نیوشنده و چرب و شیرین زبان",
      "verse_number": 13
    },
    {
      "id": "319b4947-14e1-4bdf-ba7f-1fd745b78858",
      "m1": "گر ای دون که قیصر به میدان شود",
      "m2": "کمان خواهد ار نی به چوگان شود",
      "verse_number": 14
    },
    {
      "id": "a3e7d2e2-f4a4-4c79-b16b-37f4054838af",
      "m1": "بکوشید با مرد خسروپرست",
      "m2": "بدان تا شما را نیاید شکست",
      "verse_number": 15
    },
    {
      "id": "5e1f6644-88f1-4e85-a4f2-42ab4fbac5e1",
      "m1": "سواری بداند کز ایران برند",
      "m2": "دلیری و نیرو ز شیران برند",
      "verse_number": 16
    },
    {
      "id": "47f42046-d9f9-4ae3-96dc-8c18828002cb",
      "m1": "بخراد برزین بفرمود شاه",
      "m2": "که چینی حریرآر و مشک سیاه",
      "verse_number": 17
    },
    {
      "id": "ac93e3ac-e4ad-466d-b472-49f062548d7d",
      "m1": "به قیصر یکی نامه باید نوشت",
      "m2": "چو خورشید تابان بخرم بهشت",
      "verse_number": 18
    },
    {
      "id": "91558dcb-06a3-4cb9-a02a-992aef195458",
      "m1": "سخنهای کوتاه و معنی بسی",
      "m2": "که آن یاد گیرد دل هر کسی",
      "verse_number": 19
    },
    {
      "id": "24e26c0b-fcc9-46c9-a230-1228a4decaf5",
      "m1": "که نزدیک او فیلسوفان بوند",
      "m2": "بدان کوش تا یاوهای نشنوند",
      "verse_number": 20
    },
    {
      "id": "150e35ab-0b62-44b6-8892-161954c30d75",
      "m1": "چونامه بخواند زبان برگشای",
      "m2": "به گفتار با تو ندارند پای",
      "verse_number": 21
    },
    {
      "id": "0832433c-180b-4c4d-9e76-9b435914fd5e",
      "m1": "ببالوی گفت آنچ قیصر ز من",
      "m2": "گشاید زبان بر سرانجمن",
      "verse_number": 22
    },
    {
      "id": "8afe1ef4-08c7-49b5-8bea-d4344ba89c78",
      "m1": "ز فرمان و سوگند و پیمان و عهد",
      "m2": "تو اندر سخن یاد کن همچو شهد",
      "verse_number": 23
    },
    {
      "id": "25e1f185-c88a-4df8-bd46-0503b17968c8",
      "m1": "بدان انجمن تو زبان منی",
      "m2": "بهر نیک و بد ترجمان منی",
      "verse_number": 24
    },
    {
      "id": "f9260cf3-ff2e-4215-9fa3-b3076cd44d34",
      "m1": "به چیزی که برما نیاید شکست",
      "m2": "بکوشید و با آن بسایید دست",
      "verse_number": 25
    },
    {
      "id": "ad9f429d-fb8a-4c81-9b68-fc1c8867fcec",
      "m1": "تو پیمان گفتار من در پذیر",
      "m2": "سخن هرچ گفتم همه یادگیر",
      "verse_number": 26
    },
    {
      "id": "5409b179-6288-4b90-b52f-d2ba4a966f0a",
      "m1": "شنیدند آواز فرخ جوان",
      "m2": "جهاندیده گردان روشن روان",
      "verse_number": 27
    },
    {
      "id": "1c967fb6-7676-42d0-b11d-0fbf0436dc99",
      "m1": "همه خواندند آفرین سر به سر",
      "m2": "که جز تو مبادا کسی تاجور",
      "verse_number": 28
    },
    {
      "id": "abf4dfd2-74b6-446c-b132-a7627230811e",
      "m1": "به نزدیک قیصر نهادند روی",
      "m2": "بزرگان روشن دل و راست گوی",
      "verse_number": 29
    },
    {
      "id": "89e36fe1-1676-4f0d-9b8b-91074ed1b12d",
      "m1": "چو بشنید قیصر کز ایران مهان",
      "m2": "فرستادهٔ شهریار جهان",
      "verse_number": 30
    },
    {
      "id": "e9b0caf9-c093-42b7-a57b-f84622696a01",
      "m1": "رسیدند نزدیک ایوان ز راه",
      "m2": "پذیره فرستاد چندی سپاه",
      "verse_number": 31
    },
    {
      "id": "e0a2abbb-352e-43f5-a113-f0d0ef4b2123",
      "m1": "بیاراست کاخی به دیبای روم",
      "m2": "همه پیکرش گوهر و زر بوم",
      "verse_number": 32
    },
    {
      "id": "6568e8da-11d6-4910-b7fc-8931253ab9ef",
      "m1": "نشست از بر نامور تخت عاج",
      "m2": "به سر برنهاد آن دل افروز تاج",
      "verse_number": 33
    },
    {
      "id": "f67d2eaf-bde5-4c56-bfc1-cc32e42f3257",
      "m1": "بفرمود تا پرده برداشتند",
      "m2": "ز دهلیزشان تیز بگذاشتند",
      "verse_number": 34
    },
    {
      "id": "137c1189-2221-4d4c-92d3-ce3aabd9ab08",
      "m1": "گرانمایه گستهم بد پیشرو",
      "m2": "پس او چوبالوی و شاپور گو",
      "verse_number": 35
    },
    {
      "id": "9c021759-7039-4928-9879-0492be7851fc",
      "m1": "چو خراد برزین و گرد اندیان",
      "m2": "همه تاج بر سر کمر برمیان",
      "verse_number": 36
    },
    {
      "id": "f815d9c8-8775-4fc6-b472-46ab3d7d8133",
      "m1": "رسیدند نزدیک قیصر فراز",
      "m2": "چو دیدند بردند پیشش نماز",
      "verse_number": 37
    },
    {
      "id": "368d46c3-e71f-49d9-8287-9ca9e75e76ea",
      "m1": "همه یک زبان آفرین خواندند",
      "m2": "بران تخت زر گوهر افشاندند",
      "verse_number": 38
    },
    {
      "id": "df0d52b0-c56a-423f-af9e-468a811c779f",
      "m1": "نخستین بپرسید قیصر ز شاه",
      "m2": "از ایران وز لشکر و رنج راه",
      "verse_number": 39
    },
    {
      "id": "531720d6-4ff5-4a49-935d-7432265a3847",
      "m1": "چو بشنید خراد برزین برفت",
      "m2": "برتخت با نامهٔ شاه تفت",
      "verse_number": 40
    },
    {
      "id": "137b6938-1c4d-464f-90b9-b22aceecd536",
      "m1": "بفرمان آن نامور شهریار",
      "m2": "نهادند کرسی زرین چهار",
      "verse_number": 41
    },
    {
      "id": "57ec6015-84d4-44bc-add0-63ee37f4fa2d",
      "m1": "نشست این سه پرمایهٔ نیک رای",
      "m2": "همیبود خراد برزین بپای",
      "verse_number": 42
    },
    {
      "id": "08a7ab2b-9cee-4880-a0eb-f94582d0b807",
      "m1": "بفرمود قیصر که بر زیرگاه",
      "m2": "نشیند کسی کو بپیمود راه",
      "verse_number": 43
    },
    {
      "id": "2c06e56f-82cf-4608-9a19-52fdd93a7290",
      "m1": "چنین گفت خراد برزین که شاه",
      "m2": "مرا در بزرگی ندادست راه",
      "verse_number": 44
    },
    {
      "id": "bfeef066-5b78-454f-babb-db15fc955f0d",
      "m1": "که در پیش قیصر بیارم نشست",
      "m2": "چنین نامهٔ شاه ایران بدست",
      "verse_number": 45
    },
    {
      "id": "b3ca4621-9836-4a03-8eec-1019aebf3a1b",
      "m1": "مگر بندگی را پسند آیمت",
      "m2": "به پیغام او سودمند آیمت",
      "verse_number": 46
    },
    {
      "id": "765e7a7a-eb69-4c6b-a095-4162ebac3985",
      "m1": "بدو گفت قیصر که بگشای راز",
      "m2": "چه گفت آن خردمند گردن فراز",
      "verse_number": 47
    },
    {
      "id": "3e016e23-128d-45ef-a211-d2ad9e92b14f",
      "m1": "نخست آفرین بر جهاندار کرد",
      "m2": "جهان را بدان آفرین خوارکرد",
      "verse_number": 48
    },
    {
      "id": "24e25e79-ecdc-4d45-9ad5-20f0fc0f0f6c",
      "m1": "که اویست برتر زهر برتری",
      "m2": "توانا و داننده از هر دری",
      "verse_number": 49
    },
    {
      "id": "c3fcbe09-05c8-484a-8534-b94f19556750",
      "m1": "بفرمان او گردد این آسمان",
      "m2": "کجا برترست از مکان و زمان",
      "verse_number": 50
    },
    {
      "id": "eb93e1fd-bf05-4040-873f-3fbfe2906b0e",
      "m1": "سپهر و ستاره همه کردهاند",
      "m2": "بدین چرخ گردان برآوردهاند",
      "verse_number": 51
    },
    {
      "id": "1fdd1e04-35f1-4431-a272-c107e13fb346",
      "m1": "چو از خاک مر جانور بنده کرد",
      "m2": "نخستین کیومرث را زنده کرد",
      "verse_number": 52
    },
    {
      "id": "8bd6dbf1-6cc1-4878-a96c-11986cbad12c",
      "m1": "چنان تا بشاه آفریدون رسید",
      "m2": "کزان سرفرازان و را برگزید",
      "verse_number": 53
    },
    {
      "id": "73871188-4617-4972-a53a-d4201dc5bc12",
      "m1": "پدید آمد آن تخمهٔ اندرجهان",
      "m2": "ببود آشکار آنچ بودی نهان",
      "verse_number": 54
    },
    {
      "id": "82607ed7-1a07-4634-b081-72536c2eab47",
      "m1": "همیرو چنین تا سر کی قباد",
      "m2": "که تاج بزرگی به سر برنهاد",
      "verse_number": 55
    },
    {
      "id": "9021222a-5246-42a5-928b-d2f42492f7f7",
      "m1": "نیامد بدین دوده هرگز بدی",
      "m2": "نگه داشتندی ره ایزدی",
      "verse_number": 56
    },
    {
      "id": "eec9c66c-6646-4a3a-8db7-00571567a8f5",
      "m1": "کنون بندهای ناسزاوار وگست",
      "m2": "بیامد بتخت کیان برنشست",
      "verse_number": 57
    },
    {
      "id": "2b13ed56-c77f-4ba1-ac6a-5eaff78a99f1",
      "m1": "همیداد خواهم ز بیدادگر",
      "m2": "نه افسر نه تخت و کلاه و کمر",
      "verse_number": 58
    },
    {
      "id": "b6b7e9d4-e734-4eb3-ad6b-b722fcd1ef64",
      "m1": "هرآنکس که او برنشیند بتخت",
      "m2": "خرد باید و نامداری و بخت",
      "verse_number": 59
    },
    {
      "id": "6a7f9c4d-9bba-4636-886c-309dcb859a18",
      "m1": "شناسد که این تخت و این فرهی",
      "m2": "کرا بود و دیهیم شاهنشهی",
      "verse_number": 60
    },
    {
      "id": "44287c9f-c8b8-4929-807a-1968418fc0ec",
      "m1": "مرا اندرین کار یاری کنید",
      "m2": "برین بیوفا کامگاری کنید",
      "verse_number": 61
    },
    {
      "id": "aef0ba25-6aa1-4294-bc48-66c95c6ea8e3",
      "m1": "که پوینده گشتیم گرد جهان",
      "m2": "بشرم آمدیم از کهان ومهان",
      "verse_number": 62
    },
    {
      "id": "fab2cb5d-5920-4243-8137-33b6629ef760",
      "m1": "چوقیصر بران سان سخنها شنید",
      "m2": "برخساره شد چون گل شنبلید",
      "verse_number": 63
    },
    {
      "id": "2eb037ba-af84-4697-afc4-fe529aad4964",
      "m1": "گل شنبلیدش پر از ژاله شد",
      "m2": "زبان و روانش پر ازناله شد",
      "verse_number": 64
    },
    {
      "id": "f89ea130-ce7e-4f9e-986c-0f318540a59c",
      "m1": "چوآن نامه برخواند بفزود درد",
      "m2": "شد آن تخت برچشم او لاژورد",
      "verse_number": 65
    },
    {
      "id": "0d5009a8-31dc-48b4-9266-0b80a77b42ce",
      "m1": "بخراد بر زین جهاندار گفت",
      "m2": "که این نیست برمرد دانا نهفت",
      "verse_number": 66
    },
    {
      "id": "7e87ba74-1991-48bf-9080-51a904e3b8f9",
      "m1": "مرا خسرو از خویش و پیوند بیش",
      "m2": "ز جان سخن گوی دارمش پیش",
      "verse_number": 67
    },
    {
      "id": "86342844-f9ea-422d-b8ff-e367b31efa86",
      "m1": "سلیح است و هم گنج و هم لشکرست",
      "m2": "شما را ببین تا چه اندر خورست",
      "verse_number": 68
    },
    {
      "id": "30e4fb59-63a7-4f6e-9621-f00c149efed6",
      "m1": "اگر دیده خواهی ندارم دریغ",
      "m2": "که دیده به از گنج دینار و تیغ",
      "verse_number": 69
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 69
  }
}