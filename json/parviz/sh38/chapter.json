{
  "id": "c603db61-6513-41ee-9228-00c3cec624b7",
  "title": "بخش ۳۸",
  "verses": [
    {
      "id": "e93a77d1-8007-4d59-b794-4524de85fc95",
      "m1": "مرا سال بگذشت برشست و پنج",
      "m2": "نه نیکو بود گر بیازم به گنج",
      "verse_number": 1
    },
    {
      "id": "50dafee4-6190-430c-aab6-a057775edcbb",
      "m1": "مگر بهره بر گیرم از پند خویش",
      "m2": "بر اندیشم از مرگ فرزند خویش",
      "verse_number": 2
    },
    {
      "id": "3faf18f6-a20b-474f-9c50-70507ffcc003",
      "m1": "مرا بود نوبت برفت آن جوان",
      "m2": "ز دردش منم چون تن بیروان",
      "verse_number": 3
    },
    {
      "id": "22ad5c3e-2a42-43ff-a00b-1b64ce5f107e",
      "m1": "شتابم همی تا مگر یابمش",
      "m2": "چویابم به بیغاره بشتابمش",
      "verse_number": 4
    },
    {
      "id": "7617e3ee-f35d-4252-9e37-434b75c883f5",
      "m1": "که نوبت مرا بود بیکام من",
      "m2": "چرا رفتی و بردی آرام من",
      "verse_number": 5
    },
    {
      "id": "dbd2d300-5a1f-452b-a30d-70e1b42623bf",
      "m1": "ز بدها تو بودی مرا دستگیر",
      "m2": "چرا چاره جستی ز همراه پیر",
      "verse_number": 6
    },
    {
      "id": "57767247-5b60-456e-9bde-b5aa4afbb424",
      "m1": "مگر همرهان جوان یافتی",
      "m2": "که از پیش من تیز بشتافتی",
      "verse_number": 7
    },
    {
      "id": "8173a71a-bd2e-480a-8e3b-51a70779aee0",
      "m1": "جوان را چو شد سال برسی و هفت",
      "m2": "نه بر آرزو یافت گیتی برفت",
      "verse_number": 8
    },
    {
      "id": "24042595-fddc-4e0e-8adb-3767f0436f39",
      "m1": "همیبود همواره با من درشت",
      "m2": "برآشفت و یکباره بنمود پشت",
      "verse_number": 9
    },
    {
      "id": "e2c44ae3-4237-4265-8e58-2ab099683fda",
      "m1": "برفت و غم و رنجش ایدر بماند",
      "m2": "دل و دیدهٔ من به خون درنشاند",
      "verse_number": 10
    },
    {
      "id": "13e1b510-4fa2-4d07-ae9d-65de21c71634",
      "m1": "کنون او سوی روشنایی رسید",
      "m2": "پدر را همی جای خواهد گزید",
      "verse_number": 11
    },
    {
      "id": "6375ed5c-41c9-455e-9187-f63a21b06d43",
      "m1": "برآمد چنین روزگار دراز",
      "m2": "کزان همرهان کس نگشتند باز",
      "verse_number": 12
    },
    {
      "id": "246d710c-ac5a-4bd7-bc27-fdd0a02771b4",
      "m1": "همانا مرا چشم دارد همی",
      "m2": "ز دیر آمدن خشم دارد همی",
      "verse_number": 13
    },
    {
      "id": "513e1054-01d0-4294-864c-c12f6f9c8038",
      "m1": "ورا سال سی بد مرا شصت و هفت",
      "m2": "نپرسید زین پیر و تنها برفت",
      "verse_number": 14
    },
    {
      "id": "07917abe-7d88-4569-94b1-643248e4d769",
      "m1": "وی اندر شتاب و من اندر درنگ",
      "m2": "ز کردارها تا چه آید به چنگ",
      "verse_number": 15
    },
    {
      "id": "b7896d74-fa3b-4eb1-b651-354900e54ca7",
      "m1": "روان تو دارنده روشن کناد",
      "m2": "خرد پیش جان تو جوشن کناد",
      "verse_number": 16
    },
    {
      "id": "53607be1-3841-4570-a9df-6a9139ec6c85",
      "m1": "همیخواهم از کردگار جهان",
      "m2": "ز روزی ده آشکار و نهان",
      "verse_number": 17
    },
    {
      "id": "d4612a6a-2576-4544-8e90-eb22948b7ca3",
      "m1": "که یکسر ببخشد گناه مرا",
      "m2": "درخشان کند تیره گاه مرا",
      "verse_number": 18
    }
  ],
  "poem_info": {
