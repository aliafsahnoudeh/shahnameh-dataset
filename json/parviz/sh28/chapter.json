{
  "id": "5921e182-29be-4d44-ab45-ac761a58094a",
  "title": "بخش ۲۸",
  "verses": [
    {
      "id": "8ee43c65-bb2e-47c1-b338-92d7d8dd97ca",
      "m1": "بهشتم بیاراست خورشید چهر",
      "m2": "سپه را بکردار گردان سپهر",
      "verse_number": 1
    },
    {
      "id": "ea2da00f-f01f-4ec5-be91-a6d93548f56a",
      "m1": "ز درگاه برخاست آوای کوس",
      "m2": "هواشد زگرد سپاه آبنوس",
      "verse_number": 2
    },
    {
      "id": "1b596f00-5b79-4b53-b2a8-9276cb40bb73",
      "m1": "سپاهی گزین کرد زآزادگان",
      "m2": "بیامد سوی آذرابادگان",
      "verse_number": 3
    },
    {
      "id": "be1da982-bf79-4d36-a61f-42b79fc0543e",
      "m1": "دو هفته برآمد بفرمان شاه",
      "m2": "بلشکر گه آمد دمادم سپاه",
      "verse_number": 4
    },
    {
      "id": "12c36394-b98a-4ecf-89b8-ca202051ad8d",
      "m1": "سرا پردهٔ شاه بردشت دوک",
      "m2": "چنان لشکری گشن وراهی سه دوک",
      "verse_number": 5
    },
    {
      "id": "5deb4a9e-5fcb-483e-bfb8-575d8b6d056e",
      "m1": "نیاطوس را داد لشکر همه",
      "m2": "بدو گفت مهتر تویی بررمه",
      "verse_number": 6
    },
    {
      "id": "843ddb8a-fb75-47e2-8ee0-60e2ba35df99",
      "m1": "وزان جایگه با سواران گرد",
      "m2": "عنان بارهٔ تیزتگ راسپرد",
      "verse_number": 7
    },
    {
      "id": "a04055ad-b920-4ace-9ab4-d27b90b1bf57",
      "m1": "سوی راه چیچست بنهاد روی",
      "m2": "همیراند شادان دل وراه جوی",
      "verse_number": 8
    },
    {
      "id": "33f6b9a3-d296-4a75-b70f-74876161fcb2",
      "m1": "بجایی که موسیل بود ارمنی",
      "m2": "که کردی میان بزرگان منی",
      "verse_number": 9
    },
    {
      "id": "96bff975-6d14-4a53-9f31-849db7b33cba",
      "m1": "به لشکر گهش یار بندوی بود",
      "m2": "که بندوی خال جهانجوی بود",
      "verse_number": 10
    },
    {
      "id": "9b6f98cb-2bd0-451c-96c4-064d86e96a50",
      "m1": "برفت این دوگرد ازمیان سپاه",
      "m2": "ز لشکر نگه کرد خسرو به راه",
      "verse_number": 11
    },
    {
      "id": "1f3d86af-b7db-4807-bbcd-bf2977559749",
      "m1": "به گستهم گفت آن دلاور دومرد",
      "m2": "چنین اسپ تازان به دشت نبرد",
      "verse_number": 12
    },
    {
      "id": "089229b3-b478-4cb5-a083-2154d43ebe95",
      "m1": "برو سوی ایشان ببین تاکیند",
      "m2": "برین گونه تازان زبهر چیند",
      "verse_number": 13
    },
    {
      "id": "39a2d30f-bfe6-4317-9456-097efbe76f3d",
      "m1": "چنین گفت گستهم کای شهریار",
      "m2": "برانم که آن مرد ابلق سوار",
      "verse_number": 14
    },
    {
      "id": "046112db-e9f5-4aea-9bb5-88c2a8d32ff2",
      "m1": "برادرم بندوی کنداورست",
      "m2": "همان یارش ازلشکری دیگرست",
      "verse_number": 15
    },
    {
      "id": "f2256ee5-a176-4587-bdab-43910c972156",
      "m1": "چنین گفت خسرو بگستهم شیر",
      "m2": "که این کی بود ای سوار دلیر",
      "verse_number": 16
    },
    {
      "id": "ba64ba8e-364f-431d-80a3-3cb2094a849b",
      "m1": "کجاکار بندوی باشد درشت",
      "m2": "مگر پاک یزدان بود یاروپشت",
      "verse_number": 17
    },
    {
      "id": "1d412855-9d9f-4719-9eac-829b4dc96658",
      "m1": "اگر زنده خواهی به زندان بود",
      "m2": "وگر کشته بردار میدان بود",
      "verse_number": 18
    },
    {
      "id": "67e94898-1c5c-4837-b859-f56186e1e848",
      "m1": "بدو گفت گستهم شاها درست",
      "m2": "بدان سونگه کن که اوخال تست",
      "verse_number": 19
    },
    {
      "id": "228f9b7e-4bca-4b58-bb86-e78990837a26",
      "m1": "گرآید به نزدیک وباشد جزاوی",
      "m2": "ز گستهم گوینده جز جان مجوی",
      "verse_number": 20
    },
    {
      "id": "a7f976ae-ff65-4fdb-9f7e-83ef14a1db71",
      "m1": "هم آنگه رسیدند نزدیک شاه",
      "m2": "پیاده شدند اندران سایه گاه",
      "verse_number": 21
    },
    {
      "id": "823c926d-9fc6-4516-919e-92ff53cc70e9",
      "m1": "چو رفتند نزدیک خسرو فراز",
      "m2": "ستودند و بردند پیشش نماز",
      "verse_number": 22
    },
    {
      "id": "bb72dbf4-6272-44b6-8a3e-333b43bd05c4",
      "m1": "بپرسید خسرو به بندوی گفت",
      "m2": "که گفتم تو راخاک یابم نهفت",
      "verse_number": 23
    },
    {
      "id": "5e5bb7f3-61c0-4989-bbc6-94b4e57baebe",
      "m1": "به خسرو بگفت آنچ بر وی رسید",
      "m2": "همان مردمی کو ز بهرام دید",
      "verse_number": 24
    },
    {
      "id": "65b1e462-196d-4d38-80b3-112554b95e15",
      "m1": "وزان چاره جستن دران روزگار",
      "m2": "وزان پوشش جامهٔ شهریار",
      "verse_number": 25
    },
    {
      "id": "7de63275-2a90-48f3-bb23-c481e76e2002",
      "m1": "همیگفت وخسرو فراوان گریست",
      "m2": "ازان پس بدو گفت کاین مردکیست",
      "verse_number": 26
    },
    {
      "id": "88f8b872-3fd2-400d-aa43-04f9b97ac085",
      "m1": "بدو گفت کای شاه خورشید چهر",
      "m2": "تو موسیل را چون نپرسی ز مهر",
      "verse_number": 27
    },
    {
      "id": "087180b4-a87c-4257-9fa0-04b86198fc47",
      "m1": "که تا تو ز ایران شدستی بروم",
      "m2": "نخفتست هرگز بآباد بوم",
      "verse_number": 28
    },
    {
      "id": "a0b70daf-10b4-433f-936d-f781ea8e7cc2",
      "m1": "سراپرده ودشت جای وی است",
      "m2": "نه خرگاه وخیمه سرای وی است",
      "verse_number": 29
    },
    {
      "id": "ed2a8d1c-1be5-44e7-8bd6-cff209b63999",
      "m1": "فراوان سپاهست بااوبهم",
      "m2": "سلیح بزرگی وگنج درم",
      "verse_number": 30
    },
    {
      "id": "d5470389-93db-4d5d-8f90-95d3eaa99c7a",
      "m1": "کنون تا تو رفتی برین راه بود",
      "m2": "نیازش ببرگشتن شاه بود",
      "verse_number": 31
    },
    {
      "id": "d789f0a5-b04f-4d73-8fe0-baecc4ac666f",
      "m1": "جهاندار خسرو به موسیل گفت",
      "m2": "که رنج تو کی ماند اندرنهفت",
      "verse_number": 32
    },
    {
      "id": "e417f164-bd09-4e77-bb2c-76fa01917724",
      "m1": "بکوشیم تا روز تو به شود",
      "m2": "همان نامت از مهتران مه شود",
      "verse_number": 33
    },
    {
      "id": "094c0021-8050-4466-b7d3-929cbdf0884c",
      "m1": "بدو گفت موسیل کای شهریار",
      "m2": "بمن بریکی تازه کن روزگار",
      "verse_number": 34
    },
    {
      "id": "7ce142fc-8cfd-4e02-967b-676539d48954",
      "m1": "که آیم ببوسم رکیب تو را",
      "m2": "ستایش کنم فر و زیب تو را",
      "verse_number": 35
    },
    {
      "id": "265956cc-3f6f-4801-b231-f16f6916e62b",
      "m1": "بدو گفت خسرو که با رنج تو",
      "m2": "درفشان کنم زین سخن گنج تو",
      "verse_number": 36
    },
    {
      "id": "9a0a672c-9993-4936-bbab-5bf1d7fb0436",
      "m1": "برون کرد یک پای خویش از رکیب",
      "m2": "شد آن مرد بیدار دل ناشکیب",
      "verse_number": 37
    },
    {
      "id": "fa66978d-bf3a-48ae-9938-82e625af43ee",
      "m1": "ببوسید پای و رکیب ورا",
      "m2": "همی خیره گشت از نهیب ورا",
      "verse_number": 38
    },
    {
      "id": "6440ced0-4d53-4aa6-8c2b-4a723b018461",
      "m1": "چو بیکار شد مرد خسروپرست",
      "m2": "جهانجوی فرمود تا بر نشست",
      "verse_number": 39
    },
    {
      "id": "e993b107-6276-40c8-bbb9-5b43ae05151e",
      "m1": "وزان دشت بی بر انگیخت اسپ",
      "m2": "همیتاخت تا پیش آذر گشسپ",
      "verse_number": 40
    },
    {
      "id": "bdc28669-53e5-40f0-9839-ea521b391d38",
      "m1": "نوان اندر آمد به آتشکده",
      "m2": "دلش بود یکسر بدرد آژده",
      "verse_number": 41
    },
    {
      "id": "2ee343a3-1970-4d81-b2b3-dcf5ec739ec0",
      "m1": "بشد هیربد زند و استا بدست",
      "m2": "به پیش جهاندار یزدان پرست",
      "verse_number": 42
    },
    {
      "id": "284b47bf-18f4-4413-8adf-ff1edeee279d",
      "m1": "گشاد از میان شاه زرین کمر",
      "m2": "بر آتش بر آگند چندی گهر",
      "verse_number": 43
    },
    {
      "id": "32802df4-980e-4fa7-a659-49d095381109",
      "m1": "نیایش کنان پیش آذر بگشت",
      "m2": "بنالید وز هیربد برگذشت",
      "verse_number": 44
    },
    {
      "id": "2ffa6f4c-8c1d-4671-9778-cbc9f9abbd0c",
      "m1": "همیگفت کای داور داد وپاک",
      "m2": "سردشمنان اندر آور بخاک",
      "verse_number": 45
    },
    {
      "id": "11adbf17-7ad5-4c98-a734-1432132f44c0",
      "m1": "تودانی که برداد نالم همی",
      "m2": "همه راه نیکی سگالم همی",
      "verse_number": 46
    },
    {
      "id": "48090795-8cc9-4e90-9e56-f22c06697b7c",
      "m1": "تومپسند بیداد بیدادگر",
      "m2": "بگفت این و بر بست زرین کمر",
      "verse_number": 47
    },
    {
      "id": "4f0cb3b3-64a4-4f1a-b700-d79b75eeff3e",
      "m1": "سوی دشت دوک اندر آورد روی",
      "m2": "همیشد خلیده دل و راهجوی",
      "verse_number": 48
    },
    {
      "id": "24a3c6ad-56eb-447c-b597-ab5ee00ba43a",
      "m1": "چو آمد به لشکر گه خویش باز",
      "m2": "همان تیره گشت آن شب دیریاز",
      "verse_number": 49
    },
    {
      "id": "676908b7-d680-46d6-af8c-f7333b2fcb8d",
      "m1": "فرستاد بیدار کارآگهان",
      "m2": "که تا باز جویند کارجهان",
      "verse_number": 50
    },
    {
      "id": "9a302192-5f64-4421-a260-2f6b556e58c7",
      "m1": "چو آگاه شد لشکر نیمروز",
      "m2": "که آمد ز ره شاه گیتی فروز",
      "verse_number": 51
    },
    {
      "id": "bf2614ab-bc9c-4945-a3e5-db946834a5c0",
      "m1": "همه کوس بستند بر پشت پیل",
      "m2": "زمین شد به کردار دریای نیل",
      "verse_number": 52
    },
    {
      "id": "346009c9-3d84-4625-aea5-e0f73ea67c31",
      "m1": "ازان آگهی سر به سر نو شدند",
      "m2": "بیاری به نزدیک خسرو شدند",
      "verse_number": 53
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 53
  }
}