{
  "id": "7d064629-c7fa-4ba3-a1f8-e4936051eab3",
  "title": "بخش ۱۸",
  "verses": [
    {
      "id": "8d4ab7be-2c2f-4f6e-9344-845b50df37a2",
      "m1": "ببود اندر آن شهر خسرو سه روز",
      "m2": "چهارم چو بفروخت گیتی فروز",
      "verse_number": 1
    },
    {
      "id": "1a8fe6ca-521e-4229-adee-502410fa4569",
      "m1": "بابر اندر آورد برنده تیغ",
      "m2": "جهانجوی شد سوی راه وریغ",
      "verse_number": 2
    },
    {
      "id": "52bcb0bf-a83b-4f91-8894-d9ccec4dc503",
      "m1": "که اوریغ بد نام آن شارستان",
      "m2": "بدو در چلیپا و بیمارستان",
      "verse_number": 3
    },
    {
      "id": "21716e64-8248-4e17-b01f-1068de8e3b06",
      "m1": "ببی راه پیدا یکی دیر بود",
      "m2": "جهانجوی آواز راهب شنود",
      "verse_number": 4
    },
    {
      "id": "9dfa6238-6e1c-4ac3-a81f-d01578e026df",
      "m1": "به نزدیک دیر آمد آواز داد",
      "m2": "که کردار تو جز پرستش مباد",
      "verse_number": 5
    },
    {
      "id": "c62aa2fc-dd33-41d5-8689-7b068d2f7da1",
      "m1": "گر از دیر دیرینه آیی فرود",
      "m2": "زنیکی دهش باد برتو درود",
      "verse_number": 6
    },
    {
      "id": "0ee10ada-c2d3-42a6-ba3f-2bc4ab7d6f62",
      "m1": "هم آنگاه راهب چو آوا شنید",
      "m2": "فرود آمد از دیر و او را بدید",
      "verse_number": 7
    },
    {
      "id": "6af0b259-fddc-48ac-8fa2-a0a0b24b615a",
      "m1": "بدو گفت خسرو تویی بیگمان",
      "m2": "زتخت پدرگشته نا شادمان",
      "verse_number": 8
    },
    {
      "id": "9bb8b590-0cb8-45c0-a8cc-4d2f52dbf36a",
      "m1": "زدست یکی بدکنش بندهای",
      "m2": "پلیدی منی فش پرستندهای",
      "verse_number": 9
    },
    {
      "id": "cdf1dfd0-d560-4a6f-a42f-a4206fc78ed5",
      "m1": "چوگفتار راهب بیاندازه شد",
      "m2": "دل خسرو از مهر او تازه شد",
      "verse_number": 10
    },
    {
      "id": "7450d7ab-a202-4bea-9845-6dc0776db9b5",
      "m1": "ز گفتار او در شگفتی بماند",
      "m2": "برو بر جهان آفرین رابخواند",
      "verse_number": 11
    },
    {
      "id": "7cdbff8a-46a5-44a7-b594-10e07e36cf74",
      "m1": "ز پشت صلیبی بیازید دست",
      "m2": "بپرسیدن مرد یزدان پرست",
      "verse_number": 12
    },
    {
      "id": "5f27bc8f-8453-43bd-855b-49a22df4fa9d",
      "m1": "پرستنده چون دید بردش نماز",
      "m2": "سخن گفت با او زمانی دراز",
      "verse_number": 13
    },
    {
      "id": "3c043567-d986-49a3-a3fa-acc303f0d970",
      "m1": "یکی آزمون را بدو گفت شاه",
      "m2": "که من کهتریام ز ایران سپاه",
      "verse_number": 14
    },
    {
      "id": "a8846aa9-fff0-4600-b0eb-ef46830dc508",
      "m1": "پیامی همی نزد قیصر برم",
      "m2": "چو پاسخ دهد سوی مهتر برم",
      "verse_number": 15
    },
    {
      "id": "21758599-c967-4126-8034-a4c3dc320c03",
      "m1": "گرین رفتن من همایون بود",
      "m2": "نگه کن که فرجام من چون بود",
      "verse_number": 16
    },
    {
      "id": "e9b5b7b0-f3ed-41a5-a80f-8a3aa11255fb",
      "m1": "بدو گفت راهب که چونین مگوی",
      "m2": "توشاهی مکن خویشتن شاه جوی",
      "verse_number": 17
    },
    {
      "id": "4771e7f6-9224-4fe8-a154-8d537f795147",
      "m1": "چو دیدمت گفتم سراسر سخن",
      "m2": "مرا هر زمان آزمایش مکن",
      "verse_number": 18
    },
    {
      "id": "2130ae24-9792-4f56-9a90-783252bfb226",
      "m1": "نباید دروغ ایچ دردین تو",
      "m2": "نه کژی برین راه و آیین تو",
      "verse_number": 19
    },
    {
      "id": "bdad6c82-4a45-4b22-a892-54b6ded903fc",
      "m1": "بسی رنج دیدی و آویختی",
      "m2": "سرانجام زین بنده بگریختی",
      "verse_number": 20
    },
    {
      "id": "3925a6cc-8648-4830-b276-fcbbcef9195d",
      "m1": "ز گفتار او ماند خسرو شگفت",
      "m2": "چو شرم آمدش پوزش اندر گرفت",
      "verse_number": 21
    },
    {
      "id": "565beabf-da4a-440c-bce1-5416177d4856",
      "m1": "بدو گفت راهب که پوزش مکن",
      "m2": "بپرس از من از بودنیها سخن",
      "verse_number": 22
    },
    {
      "id": "8ccb4121-84d0-4783-947b-f3e8ec5dd2ba",
      "m1": "بدین آمدن شاد و گستاخ باش",
      "m2": "جهان را یکی بارور شاخ باش",
      "verse_number": 23
    },
    {
      "id": "be0002d7-05c6-481d-9172-12ce863e46ea",
      "m1": "که یزدان تو را بینیازی دهد",
      "m2": "بلند اخترت سرفرازی دهد",
      "verse_number": 24
    },
    {
      "id": "09f9ce9b-b2bc-4e35-b3de-a3a2a9ccee1b",
      "m1": "ز قیصر بیابی سلیح و سپاه",
      "m2": "یکی دختری از در تاج و گاه",
      "verse_number": 25
    },
    {
      "id": "edfd8cd7-8795-485f-86bf-51f47ac83dd5",
      "m1": "چو با بندگان کار زارت بود",
      "m2": "جهاندار بیدار یارت بود",
      "verse_number": 26
    },
    {
      "id": "184b6ce2-c5bb-4536-9bd6-79cebc4a55eb",
      "m1": "سرانجام بگریزد آن بد نژاد",
      "m2": "فراوان کند روز نیکیش یاد",
      "verse_number": 27
    },
    {
      "id": "50ca53db-36e8-4cd5-8864-fb87d9427e64",
      "m1": "وزان رزم جایی فتد دور دست",
      "m2": "بسازد بران بوم جای نشست",
      "verse_number": 28
    },
    {
      "id": "008b033d-d4d6-4cbe-a1cb-b64cad3a5a29",
      "m1": "چو دوری گزیند ز فرمان تو",
      "m2": "بریزند خونش به پیمان تو",
      "verse_number": 29
    },
    {
      "id": "9091a963-540e-49a7-88d6-844839bdecde",
      "m1": "بدو گفت خسرو جزین خود مباد",
      "m2": "که کردی تو ای پیرداننده یاد",
      "verse_number": 30
    },
    {
      "id": "3928ceb2-d47c-4a53-81b7-f4c26a4c4545",
      "m1": "چوگویی بدین چند باشد درنگ",
      "m2": "که آید مرا پادشاهی بچنگ",
      "verse_number": 31
    },
    {
      "id": "94a5206d-1ca0-467c-9772-e72875458281",
      "m1": "چنین داد پاسخ که ده با دو ماه",
      "m2": "برین برگذرد بازیابی کلاه",
      "verse_number": 32
    },
    {
      "id": "87fc4f62-40e1-46c7-8310-e82406594e99",
      "m1": "اگر بر سر آید ده وپنج روز",
      "m2": "تو گردی شهنشاه گیتی فروز",
      "verse_number": 33
    },
    {
      "id": "89a1def9-1fe8-4533-b6dd-1542516093bc",
      "m1": "بپرسید خسرو کزین انجمن",
      "m2": "که کوشد به رنج و به آزار تن",
      "verse_number": 34
    },
    {
      "id": "1b1758b7-f5bd-4236-bc00-33157a8737b6",
      "m1": "چنین داد پاسخ که بستام نام",
      "m2": "گوی برمنش باشد و شادکام",
      "verse_number": 35
    },
    {
      "id": "3a198b32-f9bb-4044-8043-d797a12d017a",
      "m1": "دگر آنک خوانی و را خال خویش",
      "m2": "بدو تازه دانی مه و سال خویش",
      "verse_number": 36
    },
    {
      "id": "b1fee34e-3241-49a4-a3f9-ee31c3692747",
      "m1": "بپرهیز زان مرد ناسودمند",
      "m2": "که باشدت زو درد و رنج و گزند",
      "verse_number": 37
    },
    {
      "id": "344f8131-2ae7-44fa-9108-324bac2db427",
      "m1": "بر آشفت خسرو به بستام گفت",
      "m2": "که با من سخن برگشا از نهفت",
      "verse_number": 38
    },
    {
      "id": "2ad40235-2697-444f-bdfd-109bf1767470",
      "m1": "تو را مادرت نام گستهم کرد",
      "m2": "تو گویی که بستامم اندر نبرد",
      "verse_number": 39
    },
    {
      "id": "8eddf681-d8ba-4223-b3ee-ae85cf1cd503",
      "m1": "به راهب چنین گفت کینست خال",
      "m2": "به خون بود با مادر من همال",
      "verse_number": 40
    },
    {
      "id": "1a49dc4a-f2d9-4960-a0a2-6bcb147bbbb1",
      "m1": "بدو گفت راهب که آری همین",
      "m2": "ز گستهم بینی بسی رنج و کین",
      "verse_number": 41
    },
    {
      "id": "1d41882b-db40-47d9-9e17-71be8fce5169",
      "m1": "بدو گفت خسرو که ای رای زن",
      "m2": "ازان پس چه گویی چه خواهد بدن",
      "verse_number": 42
    },
    {
      "id": "291d5a17-7919-4b7c-8437-5624f45d33cf",
      "m1": "بدو گفت راهب که مندیش زین",
      "m2": "کزان پس نبینی جز از آفرین",
      "verse_number": 43
    },
    {
      "id": "c26cbab5-266f-43eb-a3e1-9629523af6a6",
      "m1": "نیاید بروی تو دیگر بدی",
      "m2": "مگر سخت کاری بود ایزدی",
      "verse_number": 44
    },
    {
      "id": "f57922b8-bcd8-425b-9946-12c75ce66366",
      "m1": "بر آشوبد این سرکش آرام تو",
      "m2": "ازان پس نباشد به جز کام تو",
      "verse_number": 45
    },
    {
      "id": "25188415-a7b6-43bc-bd98-c3d322f7539b",
      "m1": "اگر چند بد گردد این بدگمان",
      "m2": "همانش بدست تو باشد زمان",
      "verse_number": 46
    },
    {
      "id": "3d04f1d2-d125-42b8-b840-935de9071e86",
      "m1": "بدو گفت گستهم کای شهریار",
      "m2": "دلت را بدین هیچ رنجه مدار",
      "verse_number": 47
    },
    {
      "id": "651ad050-6499-4821-95a5-f56947484ca9",
      "m1": "به پاکیزه یزدان که ماه آفرید",
      "m2": "جهان را بسان تو شاه آفرید",
      "verse_number": 48
    },
    {
      "id": "62570477-59a6-4b83-b227-9860dfad6633",
      "m1": "به آذرگشسپ و به خورشید و ماه",
      "m2": "به جان و سر نامبردار شاه",
      "verse_number": 49
    },
    {
      "id": "78c639ae-0106-4cbb-afad-bd478493b1a2",
      "m1": "به گفتار ترسا نگر نگروی",
      "m2": "سخن گفتن ناسزا نشنوی",
      "verse_number": 50
    },
    {
      "id": "4432c0c1-31be-4144-bfe6-a011fdc6ad78",
      "m1": "مرا ایمنی ده ز گفتار اوی",
      "m2": "چوسوگند خوردم بهانه مجوی",
      "verse_number": 51
    },
    {
      "id": "97bac8aa-c566-42ef-83dc-1cc8afb84e31",
      "m1": "که هرگز نسازم بدی درنهان",
      "m2": "براندیش از کردگار جهان",
      "verse_number": 52
    },
    {
      "id": "797740d9-527f-47d2-b5f8-f7c43b555475",
      "m1": "بدو گفت خسرو که از ترسگار",
      "m2": "نیاید سخن گفت نابکار",
      "verse_number": 53
    },
    {
      "id": "a2159148-2176-49dd-82ae-f62766c385da",
      "m1": "ز تو نیز هرگز ندیدم بدی",
      "m2": "نیازی به کژی و نابخردی",
      "verse_number": 54
    },
    {
      "id": "b3a293bb-bbf6-4c32-a47c-b17160ad2288",
      "m1": "ولیکن ز کار سپهر بلند",
      "m2": "نباشد شگفت ار شوی پر گزند",
      "verse_number": 55
    },
    {
      "id": "afb99401-cfa6-4d91-9ce0-891ccc6655be",
      "m1": "چو بایسته کاری بود ایزدی",
      "m2": "بیکسو شود دانش و بخردی",
      "verse_number": 56
    },
    {
      "id": "2ec2392a-b153-4b5b-8371-503ef7d817cc",
      "m1": "به راهب چنین گفت پس شهریار",
      "m2": "که شاداب دل باش و به روزگار",
      "verse_number": 57
    },
    {
      "id": "922930e0-ce7a-4063-819d-48c993c60147",
      "m1": "وزان دیر چون برق رخشان زمیغ",
      "m2": "بیامد سوی شارستان و ریغ",
      "verse_number": 58
    },
    {
      "id": "27a2ef87-5ca9-4b7e-b035-ddea3f23bc70",
      "m1": "پذیره شدندش بزرگان شهر",
      "m2": "کسی را که از مردمی بود بهر",
      "verse_number": 59
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 59
  },
