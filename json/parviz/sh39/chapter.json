{
  "id": "1941949d-f11a-4c86-8f17-e35d3b4c2ee6",
  "title": "بخش ۳۹",
  "verses": [
    {
      "id": "f05fca58-0aec-4c0e-86e1-d3ee30391606",
      "m1": "کنون داستانهای دیرینه گوی",
      "m2": "سخنهای بهرام چوبینه گوی",
      "verse_number": 1
    },
    {
      "id": "d7db515d-7168-4231-bf3d-b9305abcf499",
      "m1": "که چون او سوی شهر ترکان رسید",
      "m2": "به نزد دلیر و بزرگان رسید",
      "verse_number": 2
    },
    {
      "id": "483a7ea2-060d-4659-8ccd-435f9cbd901e",
      "m1": "ز گردان بیدار دل ده هزار",
      "m2": "پذیره شدندش گزیده سوار",
      "verse_number": 3
    },
    {
      "id": "18787f42-d504-48a4-90e3-ce5b55d6debd",
      "m1": "پسر با برادرش پیش اندرون",
      "m2": "ابا هر یکی موبدی رهنمون",
      "verse_number": 4
    },
    {
      "id": "0588343e-f263-4a70-940e-d7af5e8cdeb4",
      "m1": "چو آمد بر تخت خاقان فراز",
      "m2": "برو آفرین کرد و بردش نماز",
      "verse_number": 5
    },
    {
      "id": "24607cdf-01b0-49d3-ab4b-b097bd136aa9",
      "m1": "چو خاقان ورا دید برپای جست",
      "m2": "ببوسید و بسترد رویش بدست",
      "verse_number": 6
    },
    {
      "id": "a25fc4ab-9d17-4582-adf9-f8dfedd29c7b",
      "m1": "بپرسید بسیارش از رنج راه",
      "m2": "ز کار و ز پیکار شاه و سپاه",
      "verse_number": 7
    },
    {
      "id": "8a99b822-7dde-4ca2-a2a5-c6e04aae3595",
      "m1": "هم ایزد گشسپ و یلان سینه را",
      "m2": "بپرسید و خراد برزینه را",
      "verse_number": 8
    },
    {
      "id": "26e1667a-cc09-441f-9b2b-b12fbebafa2b",
      "m1": "چو بهرام برتخت سیمین نشست",
      "m2": "گرفت آن زمان دست خاقان بدست",
      "verse_number": 9
    },
    {
      "id": "2032e7d4-e1df-491b-befc-e157f33fb4e1",
      "m1": "بدو گفت کای مهتر بافرین",
      "m2": "سپهدار ترکان و سالار چین",
      "verse_number": 10
    },
    {
      "id": "858332c5-1627-45fe-9cfe-d4ae4540cbc0",
      "m1": "تو دانی که از شهریار جهان",
      "m2": "نباشد کسی ایمن اندر نهان",
      "verse_number": 11
    },
    {
      "id": "673da2b5-5023-4449-ae67-f2339b4d0d67",
      "m1": "بر آساید از گنج و بگزایدش",
      "m2": "تن آسان کند رنج بفزایدش",
      "verse_number": 12
    },
    {
      "id": "4d553731-d07e-41ed-8596-080889fa0013",
      "m1": "گر ایدون که اندر پذیری مرا",
      "m2": "بهرنیک و بد دستگیری مرا",
      "verse_number": 13
    },
    {
      "id": "0c8251d2-ab24-460b-a068-2a36edefd6fa",
      "m1": "بدین مرز بییار یار توام",
      "m2": "بهر نیک و بد غمگسار توام",
      "verse_number": 14
    },
    {
      "id": "a09123e6-9fbd-480e-8a01-5773f7c609cb",
      "m1": "وگر هیچ رنج آیدت بگذرم",
      "m2": "زمین را سراسر بپی بسپرم",
      "verse_number": 15
    },
    {
      "id": "3e8ffc27-5d4f-4b58-94e7-1341710d48f6",
      "m1": "گر ایدون که باشی تو همداستان",
      "m2": "از ایدر شوم تا به هندوستان",
      "verse_number": 16
    },
    {
      "id": "2d7c2dbd-99db-4cc9-9559-a81c6781c294",
      "m1": "بدو گفت خاقان که ای سرفراز",
      "m2": "بدین روز هرگز مبادت نیاز",
      "verse_number": 17
    },
    {
      "id": "d8f4edc1-fd18-4199-b97d-2c8e4bf06d1d",
      "m1": "بدارم تو را همچو پیوند خویش",
      "m2": "چه پیوند برتر ز فرزند خویش",
      "verse_number": 18
    },
    {
      "id": "9074a748-a608-426c-8906-b829b0587e63",
      "m1": "همه بوم با من بدین یاورند",
      "m2": "اگر کهترانند اگر مهترند",
      "verse_number": 19
    },
    {
      "id": "e91d5a47-d4b8-4a0d-9e7b-65bc07c3156c",
      "m1": "تو را بر سران سرفرازی دهم",
      "m2": "هم از مهتران بینیازی دهم",
      "verse_number": 20
    },
    {
      "id": "79ee9283-e077-42a8-9d34-71487b67905b",
      "m1": "بدین نیز بهرام سوگند خواست",
      "m2": "زیان بود بر جان او بند خواست",
      "verse_number": 21
    },
    {
      "id": "b2d39bbb-51a2-41b6-9279-867105d3a9f3",
      "m1": "بدو گفت خاقان به برتر خدای",
      "m2": "که هست او مرا و تو را رهنمای",
      "verse_number": 22
    },
    {
      "id": "93c894c9-fe88-44df-85cc-670f818d3b45",
      "m1": "که تا زندهام ویژه یار توام",
      "m2": "بهر نیک و بد غمگسار توام",
      "verse_number": 23
    },
    {
      "id": "52a3c507-f891-4489-8f0b-4b9387ed3614",
      "m1": "ازان پس دو ایوان بیاراستند",
      "m2": "زهر گونهای جامهها خواستند",
      "verse_number": 24
    },
    {
      "id": "b349f21e-d887-46d8-8bd5-cdbd6ceea4f3",
      "m1": "پرستنده و پوشش و خوردنی",
      "m2": "ز چیزی که بایست گستردنی",
      "verse_number": 25
    },
    {
      "id": "4416bfd9-9280-4429-a4b7-24b7b068ee26",
      "m1": "ز سیمین و زرین که آید به کار",
      "m2": "ز دینار وز گوهر شاهوار",
      "verse_number": 26
    },
    {
      "id": "a284c8f0-b63c-4e97-bc26-94fa745538c0",
      "m1": "فرستاد خاقان به نزدیک اوی",
      "m2": "درخشنده شد جان تاریک اوی",
      "verse_number": 27
    },
    {
      "id": "23d1bdde-14ee-4249-add5-f3ead8f7d9db",
      "m1": "به چوگان و مجلس به دشت شکار",
      "m2": "نرفتی مگر کو بدی غمگسار",
      "verse_number": 28
    },
    {
      "id": "f90b18db-bc8c-41a8-a074-af6ef97b9375",
      "m1": "برین گونه بر بود خاقان چین",
      "m2": "همیخواند بهرام را آفرین",
      "verse_number": 29
    },
    {
      "id": "df841ddb-1f9c-41f5-b947-313c42dce6c2",
      "m1": "یکی نامبردار بد یار اوی",
      "m2": "برزم اندرون دست بردار اوی",
      "verse_number": 30
    },
    {
      "id": "ad786235-010e-4b42-86e2-ed77ba1c76c9",
      "m1": "ازو مه به گوهر مقاتوره نام",
      "m2": "که خاقان ازو یافتی نام و کام",
      "verse_number": 31
    },
    {
      "id": "1f6e3d60-4f9e-4fb9-8abd-643e8f4b5daa",
      "m1": "به شبگیر نزدیک خاقان شدی",
      "m2": "دولب را به انگشت خود بر زدی",
      "verse_number": 32
    },
    {
      "id": "b182d522-faef-467e-9cab-aa8b048345a2",
      "m1": "بران سان که کهتر کند آفرین",
      "m2": "بران نامبردار سالار چین",
      "verse_number": 33
    },
    {
      "id": "1bf35715-a41b-47ed-8142-fbeefb46b777",
      "m1": "هم آنگه زدینار بردی هزار",
      "m2": "ز گنج جهاندیده نامدار",
      "verse_number": 34
    },
    {
      "id": "0af87791-ad3b-4937-86b5-6e8f20e77e1d",
      "m1": "همیدید بهرام یک چندگاه",
      "m2": "به خاقان همیکرد خیره نگاه",
      "verse_number": 35
    },
    {
      "id": "2b5a680e-7694-4260-95b7-7f8cd643d0ff",
      "m1": "بخندید یک روز گفت ای بلند",
      "m2": "توی بر مهان جهان ارجمند",
      "verse_number": 36
    },
    {
      "id": "e972f74f-62be-479e-ab1b-a0e2b1cf33ab",
      "m1": "بهر بامدادی بهنگام بار",
      "m2": "چنین مرد دینار خواهد هزار",
      "verse_number": 37
    },
    {
      "id": "e21f5895-c04a-45aa-8f89-b6e93916a4f3",
      "m1": "ببخشش گرین بیستگانی بود",
      "m2": "همه بهر او زرکانی بود",
      "verse_number": 38
    },
    {
      "id": "31b8610b-184a-4141-bcba-7b4c194d1341",
      "m1": "بدو گفت خاقان که آیین ما",
      "m2": "چنین است و افروزش دین ما",
      "verse_number": 39
    },
    {
      "id": "7657f0b0-f054-45e9-8604-bb142cc99d77",
      "m1": "که از ما هر آنکس که جنگی ترست",
      "m2": "به هنگام سختی درنگی ترست",
      "verse_number": 40
    },
    {
      "id": "df51400a-6ada-45a6-97d6-d1395a5ba60c",
      "m1": "چو خواهد فزونی نداریم باز",
      "m2": "ز مردان رزم آور جنگ ساز",
      "verse_number": 41
    },
    {
      "id": "c619e7ee-c9cd-4c0e-8cdb-de03ee29359d",
      "m1": "فزونی مر او راست برما کنون",
      "m2": "بدینار خوانیم بر وی فسون",
      "verse_number": 42
    },
    {
      "id": "508d5381-4221-4cc4-8303-29dd55996d60",
      "m1": "چو زو بازگیرم بجوشد سپاه",
      "m2": "ز لشکر شود روز روشن سیاه",
      "verse_number": 43
    },
    {
      "id": "7515b0ff-f5b4-48b2-86b2-401d2ad9ec26",
      "m1": "جهانجوی گفت ای سر انجمن",
      "m2": "تو کردی و را خیره بر خویشتن",
      "verse_number": 44
    },
    {
      "id": "17ba1a04-2c0e-4024-9c96-4e99914abf24",
      "m1": "چو باشد جهاندار بیدار و گرد",
      "m2": "عنان را به کهتر نباید سپرد",
      "verse_number": 45
    },
    {
      "id": "323eb105-aff0-4f21-b5be-9cc7a0f779c0",
      "m1": "اگر زو رهانم تو را شایدت",
      "m2": "وگر ویژه آزرم او بایدت",
      "verse_number": 46
    },
    {
      "id": "f628f2c7-f48c-4480-bbf9-f34ea48a4311",
      "m1": "بدو گفت خاقان که فرمان تو راست",
      "m2": "بدین آرزو رای و پیمان تو راست",
      "verse_number": 47
    },
    {
      "id": "34a1dbe5-b8ae-40d2-b8dd-c86405709dd2",
      "m1": "مرا گر توانی رهانید ازوی",
      "m2": "سرآورده باشی همه گفت و گوی",
      "verse_number": 48
    },
    {
      "id": "17aafbc5-83e7-4dda-a4b6-74bef020fbca",
      "m1": "بدو گفت بهرام که اکنون پگاه",
      "m2": "چو آید مقاتوره دینار خواه",
      "verse_number": 49
    },
    {
      "id": "963838b7-3ed3-41d6-a682-150118eb0b2d",
      "m1": "مخند و بر و هیچ مگشای چشم",
      "m2": "مده پاسخ و گر دهی جز به خشم",
      "verse_number": 50
    },
    {
      "id": "66b981bd-948e-4e12-a485-a07af271bfc3",
      "m1": "گذشت آن شب و بامداد پگاه",
      "m2": "بیامد مقاتوره نزدیک شاه",
      "verse_number": 51
    },
    {
      "id": "8b2736cc-7088-412c-a3f4-04cff4a7f411",
      "m1": "جهاندار خاقان بدو ننگرید",
      "m2": "نه گفتار آن ترک جنگی شنید",
      "verse_number": 52
    },
    {
      "id": "8ea95095-e1f6-4237-8983-adfe8b2580e1",
      "m1": "ز خاقان مقاتوره آمد بخشم",
      "m2": "یکایک برآشفت و بگشاد چشم",
      "verse_number": 53
    },
    {
      "id": "5869b25b-15ab-4b6e-a732-c98990d58538",
      "m1": "بخاقان چین گفت کای نامدار",
      "m2": "چرا گشتم امروز پیش تو خوار",
      "verse_number": 54
    },
    {
      "id": "eae5b507-cd97-4e76-b12e-9b738c8ca29a",
      "m1": "همانا که این مهتر پارسی",
      "m2": "که آمد بدین مرز با یار سی",
      "verse_number": 55
    },
    {
      "id": "71365f34-c20f-40fb-b9e0-ecce10c7f872",
      "m1": "بکوشد همی تا بپیچی ز داد",
      "m2": "سپاه تو را داد خواهد بباد",
      "verse_number": 56
    },
    {
      "id": "45e6ec18-275e-416a-8194-889ef35957bf",
      "m1": "بدو گفت بهرام که ای جنگوی",
      "m2": "چرا تیزگشتی بدین گفت وگوی",
      "verse_number": 57
    },
    {
      "id": "df059005-6d20-4d85-99b1-4eef49d82613",
      "m1": "چو خاقان برد راه و فرمان من",
      "m2": "خرد را نپیچد ز پیمان من",
      "verse_number": 58
    },
    {
      "id": "e2c8e120-69ee-4553-b098-e130265813bb",
      "m1": "نمانم که آیی تو هر بامداد",
      "m2": "تن آسان دهی گنج او را به باد",
      "verse_number": 59
    },
    {
      "id": "09448d90-c8c8-4db4-921c-057fa618dd47",
      "m1": "بران نه که هستی تو سیصد سوار",
      "m2": "به رزم اندرون شیرجویی شکار",
      "verse_number": 60
    },
    {
      "id": "2a72ffd0-6450-4dc2-9f4e-65863fea0436",
      "m1": "نیرزد که هر بامداد پگاه",
      "m2": "به خروار دینار خواهی ز شاه",
      "verse_number": 61
    },
    {
      "id": "ef79b9c3-3146-47cc-8561-68dbdee3678e",
      "m1": "مقاتوره بشنید گفتار اوی",
      "m2": "سرش گشت پرکین ز آزار اوی",
      "verse_number": 62
    },
    {
      "id": "4786e4da-3a9d-4817-a1be-6c8bd68f3e2e",
      "m1": "بخشم و به تندی بیازید چنگ",
      "m2": "ز ترکش برآورد تیر خدنگ",
      "verse_number": 63
    },
    {
      "id": "14de8356-00ad-46a0-bcc2-b4ba03f05329",
      "m1": "به بهرام گفت این نشان منست",
      "m2": "برزم اندرون ترجمان منست",
      "verse_number": 64
    },
    {
      "id": "f19c49b7-4b76-4398-800a-22c5954f6827",
      "m1": "چو فردا بیایی بدین بارگاه",
      "m2": "همیدار پیکان ما را نگاه",
      "verse_number": 65
    },
    {
      "id": "2876d0b1-958c-4475-9e94-9db596196c41",
      "m1": "چو بشنید بهرام شد تیز چنگ",
      "m2": "یکی تیر پولاد پیکان خدنگ",
      "verse_number": 66
    },
    {
      "id": "7e440950-a863-4004-9fed-f1a7ac24f44f",
      "m1": "بدو داد و گفتا که این یادگار",
      "m2": "بدار و ببین تا کی آید به کار",
      "verse_number": 67
    },
    {
      "id": "66c16c3d-eee5-4acb-b674-1b9bad59172a",
      "m1": "مقاتوره از پیش خاقان برفت",
      "m2": "بیامد سوی خرگه خویش تفت",
      "verse_number": 68
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 68
  }
}