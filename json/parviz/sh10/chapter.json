{
  "id": "5336d861-6250-4166-b8aa-fab5e3d4a8b4",
  "title": "بخش ۱۰",
  "verses": [
    {
      "id": "e7b65460-e5d0-4602-a254-88fb40484c3e",
      "m1": "وزان جایگه شد به پیش پدر",
      "m2": "دودیده پراز آب و پر خون جگر",
      "verse_number": 1
    },
    {
      "id": "1c625afd-841f-4dcc-ad8b-593cb48c0822",
      "m1": "چو روی پدر دید بردش نماز",
      "m2": "همیبود پیشش زمانی دراز",
      "verse_number": 2
    },
    {
      "id": "65db7c83-ff29-4b42-8e58-7072058b2483",
      "m1": "بدو گفت کاین پهلوان سوار",
      "m2": "که او را گزین کردی ای شهریار",
      "verse_number": 3
    },
    {
      "id": "64f598d7-93e1-4c52-8d30-e8417e3d67c8",
      "m1": "بیامد چوشاهان که دارند فر",
      "m2": "سپاهی بیاورد بسیارمر",
      "verse_number": 4
    },
    {
      "id": "0876355f-71b2-423d-a72b-c4d46715ad2e",
      "m1": "بگفتم سخن هرچ آمد ز پند",
      "m2": "برو پند من بر نبد سودمند",
      "verse_number": 5
    },
    {
      "id": "c94626bf-75ac-4597-91ba-1c6b4a225539",
      "m1": "همه جنگ و پرخاش بدکام اوی",
      "m2": "که هرگز مبادا روان نام اوی",
      "verse_number": 6
    },
    {
      "id": "60ccc7a3-a5bc-4b5c-bdb7-bccbc5043eaf",
      "m1": "بناکام رزمی گران کرده شد",
      "m2": "فراوان کس از اختر آزرده شد",
      "verse_number": 7
    },
    {
      "id": "cb591558-1cd0-4211-b3dd-63f1a99c0cd0",
      "m1": "زمن بازگشتند یکسر سپاه",
      "m2": "ندیدند گفتی مرا جزبه راه",
      "verse_number": 8
    },
    {
      "id": "d6a4edd8-febc-4b29-9e08-44e75ff9a54f",
      "m1": "همی شاه خوانند بهرام را",
      "m2": "ندیدند آغاز فرجام را",
      "verse_number": 9
    },
    {
      "id": "0bd6bf1c-7b50-451e-9ee6-3caf193eca2b",
      "m1": "پس من کنون تا پل نهروان",
      "m2": "بیاورد لشکر چو کوهی گران",
      "verse_number": 10
    },
    {
      "id": "2da0fee8-6f2f-4528-8911-4221f2ded3e2",
      "m1": "چوشد کاربی برگ بگریختم",
      "m2": "بدام بلا در نیاویختم",
      "verse_number": 11
    },
    {
      "id": "bed7e3ac-35f5-40c6-8f95-950ef28691da",
      "m1": "نگه کردم اکنون به سود و زیان",
      "m2": "نباشند یاور مگر تازیان",
      "verse_number": 12
    },
    {
      "id": "ab374db8-33bd-478a-8db0-e80fd2effae3",
      "m1": "گر ای دون که فرمان دهد شهریار",
      "m2": "سواران تازی برم بیشمار",
      "verse_number": 13
    },
    {
      "id": "0aa9ff04-8fc7-4fe8-b7e0-0827ed4bf092",
      "m1": "بدو گفت هرمز که این رای نیست",
      "m2": "که اکنون تو را پای برجای نیست",
      "verse_number": 14
    },
    {
      "id": "30112aaf-40b9-4bc8-8833-f77cfd2b5a57",
      "m1": "نباشند یاور تو را تازیان",
      "m2": "چوجایی نبینند سود و زیان",
      "verse_number": 15
    },
    {
      "id": "c3e64850-612e-464c-9649-b57ab0151a0d",
      "m1": "بدرد دل اندر تو را زار نیز",
      "m2": "بدشمن سپارند از بهر چیز",
      "verse_number": 16
    },
    {
      "id": "ceea830a-a6dd-431f-a4bc-02c05e025567",
      "m1": "بدین کار پشت تو یزدان بود",
      "m2": "همآواز تو بخت خندان بود",
      "verse_number": 17
    },
    {
      "id": "0da2ff27-b11f-4e7c-b597-ea0f91a81814",
      "m1": "چو بگذاشت خواهی همی مرز وبوم",
      "m2": "از ایدر برو تازیان تا بروم",
      "verse_number": 18
    },
    {
      "id": "d5530b8d-268a-408a-a5a7-008b9b4df023",
      "m1": "سخنهای این بندهٔ چاره جوی",
      "m2": "چو رفتی یکایک بقیصر بگوی",
      "verse_number": 19
    },
    {
      "id": "65e34f2b-b11b-44b0-9f5c-a6559e8594ed",
      "m1": "بجایی که دین است و هم وخواستست",
      "m2": "سلیح و سپاه وی آراستست",
      "verse_number": 20
    },
    {
      "id": "5369c60d-0031-41b7-9ae7-014da0c0e816",
      "m1": "فریدونیان نیز خویش تواند",
      "m2": "چوکارت شود سخت پیش تواند",
      "verse_number": 21
    },
    {
      "id": "e2d977e5-b61f-4cae-b845-21ea8f2c6bd9",
      "m1": "چو بشنید خسرو زمین بوس داد",
      "m2": "بسی بر نهان آفرین کرد یاد",
      "verse_number": 22
    },
    {
      "id": "0435159d-60b9-4060-b51b-d72263934261",
      "m1": "ببندوی و گردوی و گستهم گفت",
      "m2": "که ما با غم و رنج گشتیم جفت",
      "verse_number": 23
    },
    {
      "id": "205e799f-060c-4745-b087-53a7781bbd2b",
      "m1": "بسازید و یکسر بنه برنهید",
      "m2": "برو بوم ایران بدشمن دهید",
      "verse_number": 24
    },
    {
      "id": "caf11926-b95e-4366-9b41-b3f757eafc93",
      "m1": "بگفت این و از دیده آواز خاست",
      "m2": "کهای شاه نیک اختر و داد وراست",
      "verse_number": 25
    },
    {
      "id": "627c3c66-e4dd-421a-928f-3c764087c61e",
      "m1": "یکی گرد تیره برآمد ز راه",
      "m2": "درفشی درفشان میان سپاه",
      "verse_number": 26
    },
    {
      "id": "5dad3f22-2344-4b41-81a9-6f28323f5170",
      "m1": "درفشی کجا پیکرش اژدهاست",
      "m2": "که چوبینه بر نهروان کرد راست",
      "verse_number": 27
    },
    {
      "id": "8673288e-09b2-49e3-b788-1fe7d4101cd5",
      "m1": "چوبشنید خسرو بیامد بدر",
      "m2": "گریزان برفت او ز پیش پدر",
      "verse_number": 28
    },
    {
      "id": "2493e23b-3b4d-4560-9f5a-436f67eb5cbc",
      "m1": "همیشد سوی روم برسان گرد",
      "m2": "درفشی پس پشت او لاژورد",
      "verse_number": 29
    },
    {
      "id": "0d756486-7be7-4867-8a13-26685e5f01f4",
      "m1": "بپیچید یال و بر و روی را",
      "m2": "نگه کرد گستهم و بند وی را",
      "verse_number": 30
    },
    {
      "id": "d5ebad80-3110-41a0-9e4a-4dcb7581e69e",
      "m1": "همیراندند آن دو تن نرم نرم",
      "m2": "خروشید خسرو به آوای گرم",
      "verse_number": 31
    },
    {
      "id": "052eead4-731c-4c73-a615-c14fe803e161",
      "m1": "همانا سران تان ز پیش آمدست",
      "m2": "که بدخواه تان همچو خویش آمدست",
      "verse_number": 32
    },
    {
      "id": "f1b1b222-7d90-41db-a1ae-cca19e142fc0",
      "m1": "اگر نه چنین نرم راندن چراست",
      "m2": "که بهرام نزدیک پشت شماست",
      "verse_number": 33
    },
    {
      "id": "974529c3-5b0c-49ab-ae36-13cbdb02a570",
      "m1": "بدو گفت بندوی کای شهریار",
      "m2": "دلت را ببهرام رنجه مدار",
      "verse_number": 34
    },
    {
      "id": "464b4abf-93a8-4c71-ab54-beb01e281fa0",
      "m1": "کجا گرد ما را نبیند ز راه",
      "m2": "که دورست ز ایدر درفش سیاه",
      "verse_number": 35
    },
    {
      "id": "528cada2-6089-4522-ba0d-82f60cf9ef80",
      "m1": "چنین است یارانت را گفت و گوی",
      "m2": "که ما را بدین تاختن نیست روی",
      "verse_number": 36
    },
    {
      "id": "efddb417-2855-42a2-b9ad-d85de405e08d",
      "m1": "چو چوبینه آید بایوان شاه",
      "m2": "هم آنگه به هرمز دهد تاج وگاه",
      "verse_number": 37
    },
    {
      "id": "6c69b7bf-d59e-43bc-89ab-b4ef706072b9",
      "m1": "نشیند چو دستور بردست اوی",
      "m2": "بدریا رسد کارگر شست اوی",
      "verse_number": 38
    },
    {
      "id": "aceb3e94-b00b-4f79-b4e7-d2fc851780c8",
      "m1": "بقیصر یکی نامه از شهریار",
      "m2": "نویسد که این بندهٔ نابکار",
      "verse_number": 39
    },
    {
      "id": "71e5e83b-18db-43cc-a634-e3609d0d7a2a",
      "m1": "گریزان برفتست زین مرز وبوم",
      "m2": "نباید که آرام گیرد بروم",
      "verse_number": 40
    },
    {
      "id": "eeae3b3c-2739-49aa-b840-819751705ec2",
      "m1": "هم آنگه که او خویشتن کرد راست",
      "m2": "نژندی وکژی ازین بهر ماست",
      "verse_number": 41
    },
    {
      "id": "c2267928-7ba4-4dcc-8f26-faa0b3f63eb1",
      "m1": "چو آید بران مرز بندش کنید",
      "m2": "دل شادمان را گزندش کنید",
      "verse_number": 42
    },
    {
      "id": "81748ead-d7f1-4199-b1ba-4a64b75259db",
      "m1": "بدین بارگاهش فرستید باز",
      "m2": "ممانید تا گردد او سرفراز",
      "verse_number": 43
    },
    {
      "id": "5e3f737b-3e48-40b8-8348-ce6b01c1d634",
      "m1": "ببندید هم در زمان با سپاه",
      "m2": "فرستید گریان بدین جایگاه",
      "verse_number": 44
    },
    {
      "id": "6abae509-1ccd-4fc3-a61a-d18c21848897",
      "m1": "چنین داد پاسخ که از بخت بد",
      "m2": "سزد زین نشان هرچ بر ما رسد",
      "verse_number": 45
    },
    {
      "id": "94b94697-2b37-4870-895e-7c8801f1f49d",
      "m1": "سخنها درازست و کاری درشت",
      "m2": "به یزدان کنون باز هشتیم پشت",
      "verse_number": 46
    },
    {
      "id": "311e1216-7204-431d-9f75-eed422e24ce6",
      "m1": "براند اسپ وگفت آنچ از خوب و زشت",
      "m2": "جهاندار برتارک ما نبشت",
      "verse_number": 47
    },
    {
      "id": "0aeecb6a-01d9-4c8c-a1f3-c5e233e98005",
      "m1": "بباشد نگردد باندیشه باز",
      "m2": "مبادا که آید بدشمن نیاز",
      "verse_number": 48
    },
    {
      "id": "9ca9271a-d812-41e5-9eb5-b89edbf0687d",
      "m1": "چو او برگذشت این دو بیدادگر",
      "m2": "ازو بازگشتند پر کینه سر",
      "verse_number": 49
    },
    {
      "id": "6b4464ce-e931-4267-beaa-d7165c02e2b9",
      "m1": "زراه اندر ایوان شاه آمدند",
      "m2": "پراز رنج و دل پرگناه آمدند",
      "verse_number": 50
    },
    {
      "id": "4b27eea6-e52e-40ab-88c5-f98a20b7bd9b",
      "m1": "ز در چون رسیدند نزدیک تخت",
      "m2": "زهی از کمان باز کردند سخت",
      "verse_number": 51
    },
    {
      "id": "0e004864-df18-4ab2-9339-570ca48a109d",
      "m1": "فگندند ناگاه در گردنش",
      "m2": "بیاویختند آن گرامی تنش",
      "verse_number": 52
    },
    {
      "id": "617bdf2a-8e10-4519-8706-359848b9e9f9",
      "m1": "شد آن تاج و آن تخت شاهنشهان",
      "m2": "توگفتی که هرمز نبد درجهان",
      "verse_number": 53
    },
    {
      "id": "ae8fbb0a-fca3-417a-9d19-38eb417264c1",
      "m1": "چنین است آیین گردنده دهر",
      "m2": "گهی نوش بار آورد گاه زهر",
      "verse_number": 54
    },
    {
      "id": "cbcfd51f-4ad1-4bed-bdcf-800dc4ad653c",
      "m1": "اگر مایه اینست سودش مجوی",
      "m2": "که درجستنش رنجت آید بروی",
      "verse_number": 55
    },
    {
      "id": "d3d08401-763d-40e2-b300-1402be475573",
      "m1": "چوشد گردش روز هرمز بپای",
      "m2": "تهی ماند زان تخت فرخنده جای",
      "verse_number": 56
    },
    {
      "id": "102cc4cd-40ab-4f48-9be4-b35696ba33c3",
      "m1": "هم آنگاه برخاست آواز کوس",
      "m2": "رخ خونیان گشت چون سندروس",
      "verse_number": 57
    },
    {
      "id": "ab7cca8a-5421-4649-b730-834e8b1cd93a",
      "m1": "درفش سپهبد هم آنگه ز راه",
      "m2": "پدید آمد اندر میان سپاه",
      "verse_number": 58
    },
    {
      "id": "6c0b7978-de17-4e76-a566-15a12e939206",
      "m1": "جفا پیشه گستهم و بند وی تیز",
      "m2": "گرفتند زان کاخ راه گریز",
      "verse_number": 59
    },
    {
      "id": "f85d2242-1b56-4f0a-89ad-2d17243b3d78",
      "m1": "چنین تا بخسرو رسید این دومرد",
      "m2": "جهانجوی چون دیدشان روی زرد",
      "verse_number": 60
    },
    {
      "id": "5b789f78-0efa-4111-973b-c6a6a3d54ba8",
      "m1": "بدانست کایشان دو دل پر ز راز",
      "m2": "چرا از جهاندار گشتند باز",
      "verse_number": 61
    },
    {
      "id": "75c90d63-b52d-47eb-bac4-f3d836ea5357",
      "m1": "برخساره شد چون گل شنبلید",
      "m2": "نکرد آن سخن بر دلیران پدید",
      "verse_number": 62
    },
    {
      "id": "e7942f3e-d5c5-433e-bb68-f31637b18200",
      "m1": "بدیشان چنین گفت کزشاه راه",
      "m2": "بگردید کامد بتنگی سپاه",
      "verse_number": 63
    },
    {
      "id": "95e91c90-c95d-4522-b840-9550d79a0d06",
      "m1": "بیابان گزینید وراه دراز",
      "m2": "مدارید یکسر تن از رنج باز",
      "verse_number": 64
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 64
  }
}