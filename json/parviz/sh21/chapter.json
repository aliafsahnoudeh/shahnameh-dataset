{
  "id": "7bafa44d-d6d8-4238-8d6d-f2bb9646bb5a",
  "title": "بخش ۲۱",
  "verses": [
    {
      "id": "e0dcff0f-050d-48c0-841d-5676af4ec2e2",
      "m1": "ز بیگانه قیصر به پرداخت جای",
      "m2": "پر اندیشه بنشست با رهنمای",
      "verse_number": 1
    },
    {
      "id": "d7e7b87b-de24-4be0-9935-774e87860582",
      "m1": "به موبد چنین گفت کای دادخواه",
      "m2": "ز گیتی گرفتست ما را پناه",
      "verse_number": 2
    },
    {
      "id": "669f6ab3-0291-4f2f-a120-7c8540737afc",
      "m1": "بسازیم تا او بنیرو شود",
      "m2": "وزان کهتر بد بیآهوشود",
      "verse_number": 3
    },
    {
      "id": "a7b08618-7309-44b3-a8f4-d0f1fcd2471f",
      "m1": "به قیصر چنین گفت پس رهنمای",
      "m2": "که از فیلسوفان پاکیزه رای",
      "verse_number": 4
    },
    {
      "id": "66b853d6-e92d-48ab-895c-12700aae8d3d",
      "m1": "بباید تنی چند بیداردل",
      "m2": "که بندند با ما بدین کار دل",
      "verse_number": 5
    },
    {
      "id": "6348bd15-d9d3-4cbc-a7a4-df1fe670453f",
      "m1": "فرستاد کس قیصر نامدار",
      "m2": "برفتند زان فیلسوفان چهار",
      "verse_number": 6
    },
    {
      "id": "3be09a6f-1996-433b-8bfb-b05d15f4c064",
      "m1": "جوانان و پیران رومی نژاد",
      "m2": "سخنهای دیرینه کردند یاد",
      "verse_number": 7
    },
    {
      "id": "d9bf56bc-e28e-4feb-a2ef-eb390a3a9ea1",
      "m1": "که ما تا سکندر بشد زین جهان",
      "m2": "ز ایرانیانیم خسته نهان",
      "verse_number": 8
    },
    {
      "id": "0e82ac8f-0829-4607-8e0e-acfd02e50bc1",
      "m1": "ز بس غارت و جنگ و آویختن",
      "m2": "همان بیگنه خیره خون ریختن",
      "verse_number": 9
    },
    {
      "id": "a77593fd-446a-484d-be7c-03e7bfd06b5a",
      "m1": "کنون پاک یزدان ز کردار بد",
      "m2": "به پیش اندر آوردشان کار بد",
      "verse_number": 10
    },
    {
      "id": "afc85f08-a861-41c9-8776-86bae3156c98",
      "m1": "یکی خامشی برگزین از میان",
      "m2": "چوشد کندرو بخت ساسانیان",
      "verse_number": 11
    },
    {
      "id": "d1e3d2c8-eff3-4a63-a53b-10129e82e997",
      "m1": "اگر خسرو آن خسروانی کلاه",
      "m2": "بدست آورد سر بر آرد بماه",
      "verse_number": 12
    },
    {
      "id": "b5e5bdeb-f281-47c7-b5c2-b6d131815d1f",
      "m1": "هم اندر زمان باژ خواهد ز روم",
      "m2": "بپا اندر آرد همه مرز وبوم",
      "verse_number": 13
    },
    {
      "id": "c48c0024-2898-4c80-984b-49bbdbd10915",
      "m1": "گرین درخورد با خرد یاد دار",
      "m2": "سخنهای ایرانیان باد دار",
      "verse_number": 14
    },
    {
      "id": "197d54db-59f9-451f-8c7a-58a9c49bb599",
      "m1": "ازیشان چوبشنید قیصر سخن",
      "m2": "یکی دیگر اندیشه افگند بن",
      "verse_number": 15
    },
    {
      "id": "e8a35353-5a54-4338-b1c6-7f200b0b6b80",
      "m1": "سواری فرستاد نزدیک شاه",
      "m2": "یکی نامه بنوشت و بنمود راه",
      "verse_number": 16
    },
    {
      "id": "6ef58023-4532-4c58-be97-555a42eb9621",
      "m1": "ز گفتار بیدار دانندگان",
      "m2": "سخنهای دیرینه خوانندگان",
      "verse_number": 17
    },
    {
      "id": "6d30f1ec-ae8c-4ca4-a8b1-aed9dd8f45ad",
      "m1": "چو آمد به نزدیک خسرو سوار",
      "m2": "بگفت آنچ بشنید با نامدار",
      "verse_number": 18
    },
    {
      "id": "d965af67-da0d-4bd6-b960-7326cb60a7ab",
      "m1": "همان نامهٔ قیصر او را سپرد",
      "m2": "سخنهای قیصر برو برشمرد",
      "verse_number": 19
    },
    {
      "id": "46ec8697-8b8f-46f1-8327-8c7015172481",
      "m1": "چو خسرو بدید آن دلش تنگ شد",
      "m2": "رخانش ز اندیشه بیرنگ شد",
      "verse_number": 20
    },
    {
      "id": "a3971223-c4dd-4a9a-9454-30d6c12804bd",
      "m1": "چنین داد پاسخ که گر زین سخن",
      "m2": "که پیش آمد از روزگار کهن",
      "verse_number": 21
    },
    {
      "id": "94a3a4be-d9cf-4685-a348-40641656160c",
      "m1": "همی بر دل این یاد باید گرفت",
      "m2": "همه رنجها باد باید گرفت",
      "verse_number": 22
    },
    {
      "id": "86013727-a8a7-4934-9f63-a525cd4817ef",
      "m1": "گرفتیم و گشتیم زین مرز باز",
      "m2": "شما را مبادا به ایران نیاز",
      "verse_number": 23
    },
    {
      "id": "f300ed8b-255a-4bef-ac87-bd2185f1124b",
      "m1": "نگه کن کنون نا نیاکان ما",
      "m2": "گزیده جهاندار و پاکان ما",
      "verse_number": 24
    },
    {
      "id": "bc2d757e-3f6b-42b5-a613-ad34c1a39094",
      "m1": "به بیداد کردند جنگ ار بداد",
      "m2": "نگر تا ز پیران که دارد بیاد",
      "verse_number": 25
    },
    {
      "id": "fa614fd4-e8d9-488c-9aca-e87773f3233e",
      "m1": "سزد گر بپرسد ز دانای روم",
      "m2": "که این بد ز زاغ آمدست ار زبوم",
      "verse_number": 26
    },
    {
      "id": "3af45b62-6436-4485-80af-f19cbcbd3888",
      "m1": "که هرکس که در رزم شد سرفراز",
      "m2": "همی ز آفریننده شد بینیاز",
      "verse_number": 27
    },
    {
      "id": "f0ace7b2-00d4-49dd-9a90-84c462f1daa6",
      "m1": "نیاکان ما نامداران بدند",
      "m2": "به گیتی درون کامگاران بدند",
      "verse_number": 28
    },
    {
      "id": "4bc3d519-e564-4bf6-bb4e-b624a5c49d15",
      "m1": "نبرداشتند از کسی سرکشی",
      "m2": "بلندی و تندی و بیدانشی",
      "verse_number": 29
    },
    {
      "id": "627b2924-668c-43d7-b1d2-f54b7f39cc89",
      "m1": "کنون این سخنها نیارد بها",
      "m2": "که باشد سراندر دم اژدها",
      "verse_number": 30
    },
    {
      "id": "0938c70e-1a2d-4ef7-96c0-b7754f44ab02",
      "m1": "یکی سوی قیصر بر از من درود",
      "m2": "بگویش که گفتار بیتار و پود",
      "verse_number": 31
    },
    {
      "id": "b653b487-a57c-42bf-b601-e91af8a58b27",
      "m1": "بزرگان نیارند پیش خرد",
      "m2": "به فرجام هم نیک و بد بگذرد",
      "verse_number": 32
    },
    {
      "id": "55d3f6c6-8ce0-43d5-a959-308d63131d1b",
      "m1": "ازین پس نه آرام جویم نه خواب",
      "m2": "مگر برکشم دامن از تیره آب",
      "verse_number": 33
    },
    {
      "id": "7d4ec92d-5424-4699-ac74-7a31a1476e81",
      "m1": "چو رومی نیابیم فریادرس",
      "m2": "به نزدیک خاقان فرستیم کس",
      "verse_number": 34
    },
    {
      "id": "86435d6b-22aa-4eaf-bfe7-f1a08d5cce89",
      "m1": "سخن هرچ گفتم همه خیره شد",
      "m2": "که آب روان از بنه تیره شد",
      "verse_number": 35
    },
    {
      "id": "d2111356-632f-42d3-a1d0-843886734ccd",
      "m1": "فرستادگانم چوآیند باز",
      "m2": "بدین شارستان در نمانم دراز",
      "verse_number": 36
    },
    {
      "id": "366fe75e-c851-489e-8c5e-ebe8252ed114",
      "m1": "به ایرانیان گفت فرمان کنید",
      "m2": "دل خویش را زین سخن مشکنید",
      "verse_number": 37
    },
    {
      "id": "fda46abb-09f6-4477-9b54-676febe5d0bf",
      "m1": "که یزدان پیروزگر یار ماست",
      "m2": "جوانمردی و مردمی کارماست",
      "verse_number": 38
    },
    {
      "id": "ce44d704-18c7-45c2-a803-3cc93b54c0e7",
      "m1": "گرفت این سخن بردل خویش خوار",
      "m2": "فرستاد نامه بدست تخوار",
      "verse_number": 39
    },
    {
      "id": "df6beae1-144e-4b1d-8f4a-f2e56e9fef42",
      "m1": "برین گونه برنامهای برنوشت",
      "m2": "ز هرگونهای اندر و خوب و زشت",
      "verse_number": 40
    },
    {
      "id": "62274c94-5aec-4cc1-80f6-c0f9439d8a1b",
      "m1": "بیامد ز نزدیک خسرو سوار",
      "m2": "چنین تا در قیصر نامدار",
      "verse_number": 41
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 41
  }
}