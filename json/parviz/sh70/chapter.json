{
  "id": "7048e171-9d04-4b31-be5b-a19c4eb36f8b",
  "title": "بخش ۷۰",
  "verses": [
    {
      "id": "5c48c8b5-2daa-406e-977d-42c7176da8a0",
      "m1": "همی هر زمان شاه برتر گذشت",
      "m2": "چوشد سال شاهیش بر بیست و هشت",
      "verse_number": 1
    },
    {
      "id": "1936090e-9aca-4ab9-9fd6-ba65b32126d3",
      "m1": "کسی را نشد بر درش کار بد",
      "m2": "ز درگاه آگاه شد باربد",
      "verse_number": 2
    },
    {
      "id": "ff07ebf9-9794-48b1-b6e2-de2485b22234",
      "m1": "بدو گفت هر کس که شاه جهان",
      "m2": "گزیدست رامشگری در نهان",
      "verse_number": 3
    },
    {
      "id": "97bc639f-e126-4bad-b6e7-0cb086a75520",
      "m1": "اگر با تو او را برابر کند",
      "m2": "تو را بر سر سرکش افسر کند",
      "verse_number": 4
    },
    {
      "id": "f10eec67-e5bf-4069-804f-2a5556923f53",
      "m1": "چو بشنید مرد آن بجوشیدش آز",
      "m2": "وگرچه نبودش به چیزی نیاز",
      "verse_number": 5
    },
    {
      "id": "7f3eb264-a7e6-4275-952a-60787a530d8f",
      "m1": "ز کشور بشد تا به درگاه شاه",
      "m2": "همیکرد رامشگران را نگاه",
      "verse_number": 6
    },
    {
      "id": "d413ea9f-85d6-410f-8ba4-d253be9009a9",
      "m1": "چوبشنید سرکش دلش تیره شد",
      "m2": "به زخم سرود اندرو خیره شد",
      "verse_number": 7
    },
    {
      "id": "613cf156-04a4-4ac4-b071-587e31066275",
      "m1": "بیامد به درگاه سالار بار",
      "m2": "درم کرد و دینار چندی نثار",
      "verse_number": 8
    },
    {
      "id": "f85130a4-497f-4195-9909-ed149b3984ae",
      "m1": "بدو گفت رامشگری بر درست",
      "m2": "که از من به سال و هنربرترست",
      "verse_number": 9
    },
    {
      "id": "5a7a6cb4-bd8b-4a81-9732-ebdd38e9591e",
      "m1": "نباید که در پیش خسرو شود",
      "m2": "که ما کهنه گشتیم و او نو شود",
      "verse_number": 10
    },
    {
      "id": "290db334-28d4-4393-b355-77dcd07b919c",
      "m1": "ز سرکش چو بشنید دربان شاه",
      "m2": "ز رامشگر ساده بربست راه",
      "verse_number": 11
    },
    {
      "id": "2f85ba8b-bf93-4361-9f3e-90c2502c5db4",
      "m1": "چو رفتی به نزدیک او باربد",
      "m2": "همش کار بد بود و هم بار بد",
      "verse_number": 12
    },
    {
      "id": "73ecad45-d764-4297-899e-3ecc3e98bfb2",
      "m1": "ندادی ورا بار سالار بار",
      "m2": "نه نیزش بدی مردمی خواستار",
      "verse_number": 13
    },
    {
      "id": "7b738672-5230-46ff-897b-f291fe80adfc",
      "m1": "چو نومید برگشت زان بارگاه",
      "m2": "ابا بربط آمد سوی باغ شاه",
      "verse_number": 14
    },
    {
      "id": "d6662c04-af64-4cf2-99e7-5ee439748bfb",
      "m1": "کجا باغبان بود مردوی نام",
      "m2": "شد از دیدنش باربد شادکام",
      "verse_number": 15
    },
    {
      "id": "dc02d8e2-d729-446d-9a23-a3afbed9a0dc",
      "m1": "بدان باغ رفتی به نوروز شاه",
      "m2": "دو هفته ببودی بدان جشنگاه",
      "verse_number": 16
    },
    {
      "id": "a0a5fc0d-65f4-47e2-a82d-9946bf242e3a",
      "m1": "سبک باربد نزد مردوی شد",
      "m2": "هم آن روز با مرد همبوی شد",
      "verse_number": 17
    },
    {
      "id": "cb8a13ff-403c-4c93-ac44-424aa415c21d",
      "m1": "چنین گفت با باغبان باربد",
      "m2": "که گویی تو جانی و من کالبد",
      "verse_number": 18
    },
    {
      "id": "cdcab3b6-42e9-4171-b8e4-099e9ac548c5",
      "m1": "کنون آرزو خواهم از تو یکی",
      "m2": "کجاهست نزدیک تو اندکی",
      "verse_number": 19
    },
    {
      "id": "358b1742-afd6-441b-b268-8acc4c69075f",
      "m1": "چو آید بدین باغ شاه جهان",
      "m2": "مرا راه ده تاببینم نهان",
      "verse_number": 20
    },
    {
      "id": "712f1d73-5679-47c3-815f-7ec527878d51",
      "m1": "که تاچون بود شاه را جشنگاه",
      "m2": "ببینم نهفته یکی روی شاه",
      "verse_number": 21
    },
    {
      "id": "8c306881-da6a-4ff9-ac72-d1e0363cfb77",
      "m1": "بدو گفت مردوی کایدون کنم",
      "m2": "ز مغز تو اندیشه بیرون کنم",
      "verse_number": 22
    },
    {
      "id": "52142466-b9c6-4ce5-b778-37fcfca63020",
      "m1": "چو خسرو همیخواست کاید بباغ",
      "m2": "دل میزبان شد چو روشن چراغ",
      "verse_number": 23
    },
    {
      "id": "bbec976e-530b-4664-a117-d67eeda30767",
      "m1": "بر باربد شد بگفت آنک شاه",
      "m2": "همیرفت خواهد بران جشنگاه",
      "verse_number": 24
    },
    {
      "id": "e7f87bba-ec02-4dc4-95dd-19087b48cd1b",
      "m1": "همه جامه را باربد سبز کرد",
      "m2": "همان بربط و رود ننگ و نبرد",
      "verse_number": 25
    },
    {
      "id": "0e879f1a-db71-46a3-8688-04608564dbf9",
      "m1": "بشد تابجایی که خسرو شدی",
      "m2": "بهاران نشستن گهی نو شدی",
      "verse_number": 26
    },
    {
      "id": "7aebe4c4-b7ca-4d1b-a6b9-19987feaa123",
      "m1": "یکی سرو بد سبز و برگش گشن",
      "m2": "ورا شاخ چون رزمگاه پشن",
      "verse_number": 27
    },
    {
      "id": "03bf17a4-9a50-49bf-b8ab-cf0f82feab68",
      "m1": "بران سرو شد بربط اندر کنار",
      "m2": "زمانی همیبود تا شهریار",
      "verse_number": 28
    },
    {
      "id": "e9e9ae36-a4bc-4a17-a72a-679012bd99ed",
      "m1": "ز ایوان بیامد بدان جشنگاه",
      "m2": "بیاراست پیروزگر جای شاه",
      "verse_number": 29
    },
    {
      "id": "6f387a0b-7f5e-46ee-ad31-4f919f008d09",
      "m1": "بیامد پری چهرهٔ میگسار",
      "m2": "یکی جام بر کف بر شهریار",
      "verse_number": 30
    },
    {
      "id": "c7a289d0-b5c0-4cd4-9a76-c34c2cec0759",
      "m1": "جهاندار بستد ز کودک نبید",
      "m2": "بلور از می سرخ شد ناپدید",
      "verse_number": 31
    },
    {
      "id": "80140052-833d-4b1f-a1b9-710d6e8ffb5e",
      "m1": "بدانگه که خورشید برگشت زرد",
      "m2": "همیبود تاگشت شب لاژورد",
      "verse_number": 32
    },
    {
      "id": "19294206-c1e2-4011-870e-17329e1884f9",
      "m1": "زننده بران سرو برداشت رود",
      "m2": "همان ساخته پهلوانی سرود",
      "verse_number": 33
    },
    {
      "id": "72bc163d-05de-427a-9648-53a4cd859074",
      "m1": "یکی نغز دستان بزد بر درخت",
      "m2": "کزان خیره شد مرد بیداربخت",
      "verse_number": 34
    },
    {
      "id": "f073ab8a-f2fd-4996-b0fc-1bd5687fb3e8",
      "m1": "سرودی به آواز خوش برکشید",
      "m2": "که اکنون تو خوانیش داد آفرید",
      "verse_number": 35
    },
    {
      "id": "78706971-2746-4f7e-8b26-1a0f109b52a1",
      "m1": "بماندند یک مجلس اندر شگفت",
      "m2": "همی هرکسی رای دیگر گرفت",
      "verse_number": 36
    },
    {
      "id": "cc58cccc-f85a-4007-936c-8dae9666d7b8",
      "m1": "بدان نامداران بفرمود شاه",
      "m2": "که جویند سرتاسر آن جشنگاه",
      "verse_number": 37
    },
    {
      "id": "f06d8a26-f680-46c4-bc7f-e74352a9cba3",
      "m1": "فراوان بجستند و باز آمدند",
      "m2": "به نزدیک خسرو فراز آمدند",
      "verse_number": 38
    },
    {
      "id": "a7523819-7d47-47bb-abb8-fbb0b2971260",
      "m1": "جهاندیده آنگه ره اندر گرفت",
      "m2": "که از بخت شاه این نباشد شگفت",
      "verse_number": 39
    },
    {
      "id": "dd0f3bbd-b512-4af7-9554-2c6365537f54",
      "m1": "که گردد گل سبز رامشگرش",
      "m2": "که جاوید بادا سر و افسرش",
      "verse_number": 40
    },
    {
      "id": "4df00d77-287a-4e7a-bbdc-b59c244254fa",
      "m1": "بیاورد جامی دگر میگسار",
      "m2": "چو از خوب رخ بستد آن شهریار",
      "verse_number": 41
    },
    {
      "id": "9e42a2f9-ae4b-41f1-ab5d-b811e384134a",
      "m1": "زننده دگرگون بیاراست رود",
      "m2": "برآورد ناگاه دیگر سرود",
      "verse_number": 42
    },
    {
      "id": "faf6315c-4d8c-4f82-bb1e-7f09e52b973a",
      "m1": "که پیکار گردش همیخواندند",
      "m2": "چنین نام ز آواز او راندند",
      "verse_number": 43
    },
    {
      "id": "8d67ed06-790b-4508-a1e5-c79bfa999db3",
      "m1": "چو آن دانشی گفت و خسرو شنید",
      "m2": "به آواز او جام می در کشید",
      "verse_number": 44
    },
    {
      "id": "0c4c2717-300a-419c-9d81-9337d0ab087e",
      "m1": "بفرمود کاین رابجای آورید",
      "m2": "همه باغ یک سر به پای آورید",
      "verse_number": 45
    },
    {
      "id": "d2e60d05-c2f3-4517-93a6-db46ac1a94c4",
      "m1": "بجستند بسیار هر سوی باغ",
      "m2": "ببردند زیر درختان چراغ",
      "verse_number": 46
    },
    {
      "id": "168bfe66-43b7-4056-a4b2-55299f261018",
      "m1": "ندیدند چیزی جز از بید و سرو",
      "m2": "خرامان به زیر گل اندر تذرو",
      "verse_number": 47
    },
    {
      "id": "884b3b7f-f9f4-4673-a5c7-52eb925affec",
      "m1": "شهنشاه پس جام دیگر بخواست",
      "m2": "بر آواز سربرآورد راست",
      "verse_number": 48
    },
    {
      "id": "06f7948e-43c5-474c-99a3-764f04b4b3f1",
      "m1": "برآمد دگر باره بانگ سرود",
      "m2": "همان ساخته کرده آواز رود",
      "verse_number": 49
    },
    {
      "id": "c7b1ee1f-66cb-409b-a9a1-544f75749621",
      "m1": "همی سبز در سبز خوانی کنون",
      "m2": "برین گونه سازند مکر و فسون",
      "verse_number": 50
    },
    {
      "id": "42b4e7a6-80f2-445e-b7af-cc26e0b0b1af",
      "m1": "چوبشنید پرویز برپای خاست",
      "m2": "به آواز او بر یکی جام خواست",
      "verse_number": 51
    },
    {
      "id": "0dffc38e-9532-470a-987a-7a6b437320e8",
      "m1": "که بود اندر آن جام یک من نبید",
      "m2": "به یکدم می روشن اندر کشید",
      "verse_number": 52
    },
    {
      "id": "6cfd2ee1-a5db-4126-bf72-765c3ec9a375",
      "m1": "چنین گفت کاین گر فرشته بدی",
      "m2": "ز مشک و زعنبر سرشته بدی",
      "verse_number": 53
    },
    {
      "id": "a1b72628-2678-49da-9587-f869a2c9aa9a",
      "m1": "وگر دیو بودی نگفتی سرود",
      "m2": "همان نیز نشناختی زخم رود",
      "verse_number": 54
    },
    {
      "id": "e6c7749e-5a67-4a40-bf14-4ee9413bdf24",
      "m1": "بجویید درباغ تا این کجاست",
      "m2": "همه باغ و گلشن چپ و دست راست",
      "verse_number": 55
    },
    {
      "id": "db1ed5fd-71b2-4411-ab14-7b58fdefbd09",
      "m1": "دهان و برش پر ز گوهر کنم",
      "m2": "برین رود سازانش مهتر کنم",
      "verse_number": 56
    },
    {
      "id": "4c2e13cc-c736-46d8-9dab-19cfcd60cd2e",
      "m1": "چو بشنید رامشگر آواز اوی",
      "m2": "همان خوب گفتار دمساز اوی",
      "verse_number": 57
    },
    {
      "id": "826175ea-3607-4a97-8806-d2a6d42d70bc",
      "m1": "فرود آمد از شاخ سرو سهی",
      "m2": "همیرفت با رامش و فرهی",
      "verse_number": 58
    },
    {
      "id": "6d4fc255-7225-4618-8434-9e4a006d3bc9",
      "m1": "بیامد بمالید برخاک روی",
      "m2": "بدو گفت خسرو چه مردی بگوی",
      "verse_number": 59
    },
    {
      "id": "80910d57-23a1-4d9b-866a-0dc298fb3d59",
      "m1": "بدو گفت شاهایکی بندهام",
      "m2": "به آواز تو در جهان زندهام",
      "verse_number": 60
    },
    {
      "id": "157b2830-9f83-4383-a841-8bc8bee854fa",
      "m1": "سراسر بگفت آنچ بود از بنه",
      "m2": "که رفت اندر آن یک دل و یک تنه",
      "verse_number": 61
    },
    {
      "id": "421e3080-32c7-49cc-925f-219371d921e7",
      "m1": "بدیدار او شاد شد شهریار",
      "m2": "بسان گلستان به ماه بهار",
      "verse_number": 62
    },
    {
      "id": "daadc651-aa26-4686-b6cc-d8128caf6b00",
      "m1": "به سرکش چنین گفت کای بد هنر",
      "m2": "تو چون حنظلی باربد چون شکر",
      "verse_number": 63
    },
    {
      "id": "5ecd9098-e283-4c91-8e42-a5feba9a104b",
      "m1": "چرا دور کردی تو او را ز من",
      "m2": "دریغ آمدت او درین انجمن",
      "verse_number": 64
    },
    {
      "id": "e3431b99-8737-4227-bcef-d0cb90fe32e7",
      "m1": "به آواز او شاد می درکشید",
      "m2": "همان جام یاقوت بر سرکشید",
      "verse_number": 65
    },
    {
      "id": "d7db28b8-dbb9-4114-bc0f-b66d8a899af4",
      "m1": "برین گونه تا سرسوی خواب کرد",
      "m2": "دهانش پر از در خوشاب کرد",
      "verse_number": 66
    },
    {
      "id": "e4bbede7-64c0-44c1-851f-0fad52341d5d",
      "m1": "ببد باربد شاه رامشگران",
      "m2": "یکی نامدارای شد از مهتران",
      "verse_number": 67
    },
    {
      "id": "4ba85e00-c236-43b2-aae0-bb35a99824c6",
      "m1": "سر آمد کنون قصهٔ باربد",
      "m2": "مبادا که باشد تو را یار بد",
      "verse_number": 68
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 68
  },
