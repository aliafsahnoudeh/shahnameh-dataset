{
  "id": "5f0eb1b0-6990-4df3-839a-907136e8fd6d",
  "title": "بخش ۳۱",
  "verses": [
    {
      "id": "7b5da351-9b68-4be3-a1fd-ff08d9c8cc35",
      "m1": "چوخورشید برزد سراز تیره کوه",
      "m2": "خروشی برآمد زهر دو گروه",
      "verse_number": 1
    },
    {
      "id": "90970f59-d801-49e1-b7c4-fcf1d0013906",
      "m1": "که گفتی زمین گشت گردان سپهر",
      "m2": "گر از تیغها تیره شد روی مهر",
      "verse_number": 2
    },
    {
      "id": "9c5263fe-b185-404d-b62c-18a4f92b7e2c",
      "m1": "بیاراسته میمن و میسره",
      "m2": "زمین کوه گشت آهنین یکسره",
      "verse_number": 3
    },
    {
      "id": "6309e529-bc29-47c2-a415-2fddf4433a78",
      "m1": "از آواز اسپان و بانگ سپاه",
      "m2": "بیابان همیجست بر کوه راه",
      "verse_number": 4
    },
    {
      "id": "0e8ebd94-d552-4a43-bf69-c1919af32862",
      "m1": "چو بهرام جنگی بدان بنگرید",
      "m2": "یکی خنجر آبگون برکشید",
      "verse_number": 5
    },
    {
      "id": "f15ae481-20db-4df9-8523-2bdcdcca2094",
      "m1": "نیامد به دلش اندرون ترس و بیم",
      "m2": "دل شیر دربیشه شد بدو نیم",
      "verse_number": 6
    },
    {
      "id": "6647f1cb-1fe2-41af-9927-e4cdeb88828b",
      "m1": "به ایرانیان گفت صف برکشید",
      "m2": "همه کشور دوک لشکر کشید",
      "verse_number": 7
    },
    {
      "id": "321b1e4e-ef42-4371-a729-2434da38c37f",
      "m1": "همیگشت گرد سپه یک تنه",
      "m2": "که دارد نگه میسر و میمنه",
      "verse_number": 8
    },
    {
      "id": "d29fc609-3d1e-4a54-8ee6-77c4d54ca631",
      "m1": "یلان سینه را گفت برقلبگاه",
      "m2": "همیباش تا پیش روی سپاه",
      "verse_number": 9
    },
    {
      "id": "de903749-594e-4341-a02c-1321195d929f",
      "m1": "که از لشکر امروز جنگی منم",
      "m2": "بگاه گریزش درنگی منم",
      "verse_number": 10
    },
    {
      "id": "fd2ab516-4270-4f54-ab1b-1006761b96b3",
      "m1": "نگه کرد خسرو بدان رزمگاه",
      "m2": "جهان دید یکسر زلشکر سیاه",
      "verse_number": 11
    },
    {
      "id": "cf417244-bbc9-4b98-bd64-d21eca63b97b",
      "m1": "رخ شید تابان چوکام هژبر",
      "m2": "همی تیغ بارید گفتی ز ابر",
      "verse_number": 12
    },
    {
      "id": "143e2eba-8f07-464d-a7ae-f3816fc73318",
      "m1": "نیاطوس و بندوی و گستهم وشاه",
      "m2": "ببالا گذشتند زان رزمگاه",
      "verse_number": 13
    },
    {
      "id": "0eba9422-fff8-467c-b858-5f036ce125ff",
      "m1": "نشستند بر کوه دوک آن سران",
      "m2": "نهاده دو دیده بفرمانبران",
      "verse_number": 14
    },
    {
      "id": "4f4287c1-df35-41a6-b82d-f117d4965e44",
      "m1": "ازان کوه لشکر همیدید شاه",
      "m2": "چپ وراست و قلب و جناح سپاه",
      "verse_number": 15
    },
    {
      "id": "c5ff121d-2e24-4017-ae49-1cea46dcd035",
      "m1": "چوبرخاست آواز کوس از دو روی",
      "m2": "برفتند مردان پر خاشجوی",
      "verse_number": 16
    },
    {
      "id": "81a8eaac-82a9-4613-b3ba-ffade883db63",
      "m1": "تو گفتی زمین کوه آهن شدست",
      "m2": "سپهر از بر خاک دشمن شدست",
      "verse_number": 17
    },
    {
      "id": "4ffd9566-2516-45be-be3d-35934d32bd0f",
      "m1": "چو خسرو بران گونه پیکار دید",
      "m2": "فلک تار دید و زمین قار دید",
      "verse_number": 18
    },
    {
      "id": "47dcbe80-327b-4021-bc37-85e0e96e1810",
      "m1": "به یزدان همیگفت برپهلوی",
      "m2": "که از برتران پاک و برتر توی",
      "verse_number": 19
    },
    {
      "id": "3f7ebb59-2a73-44b1-8b51-431878660228",
      "m1": "که برگردد امروز از رزم شاد",
      "m2": "که داند چنین جز تو ای پاک وراد",
      "verse_number": 20
    },
    {
      "id": "61a98272-f587-4227-a11d-96dd88da2f2e",
      "m1": "کرابخت خواهد شدن کندرو",
      "m2": "سر نیزه که شود خار و خو",
      "verse_number": 21
    },
    {
      "id": "ecb9383e-0ee3-42ee-9c04-61abdd0196c7",
      "m1": "دل و جان خسرو پراندیشه بود",
      "m2": "جهان پیش چشمش یکی بیشه بود",
      "verse_number": 22
    },
    {
      "id": "22f41783-aa6d-48d9-a838-b57c97dc6565",
      "m1": "که بگسست کوت ازمیان سپاه",
      "m2": "ز آهن بکردار کوهی سیاه",
      "verse_number": 23
    },
    {
      "id": "5cfca91b-6eab-48e2-b1fb-9ae1707ac53e",
      "m1": "بیامد دمان تامیان گروه",
      "m2": "چو نزدیک ترشد بران برز کوه",
      "verse_number": 24
    },
    {
      "id": "4480c870-0bd8-4a56-9c80-62a29e0423cd",
      "m1": "به خسرو چنین گفت کای سرفراز",
      "m2": "نگه کن بدان بنده دیوساز",
      "verse_number": 25
    },
    {
      "id": "20107fd2-6aad-4c8b-bf5e-392e9133cb5b",
      "m1": "که بااو برزم اندر آویختی",
      "m2": "چواو کامران شد تو بگریختی",
      "verse_number": 26
    },
    {
      "id": "1321be13-3f1a-49d9-8936-c3280671b17d",
      "m1": "ببین از چپ لشکر ودست راست",
      "m2": "که تا از میان دلیران کجاست",
      "verse_number": 27
    },
    {
      "id": "a6ba5988-b77f-4cd8-93ae-de288488cc5b",
      "m1": "کنون تا بیاموزمش کارزار",
      "m2": "ببیند دل و رزم مردان کار",
      "verse_number": 28
    },
    {
      "id": "e5984ab6-ebd4-4459-b7b7-f0476e0e8b65",
      "m1": "چو بشنید خسرو زکوت این سخن",
      "m2": "دلش گشت پردرد و کین کهن",
      "verse_number": 29
    },
    {
      "id": "c61d019c-8c06-4b1b-bae6-f1c543c47021",
      "m1": "کجا گفت کز بنده بگریختی",
      "m2": "سلیح سواران فروریختی",
      "verse_number": 30
    },
    {
      "id": "de7b315e-1192-4c26-9843-fa4161e3c284",
      "m1": "ورا زان سخن هیچ پاسخ نداد",
      "m2": "دلش گشت پرخون و سر پر ز باد",
      "verse_number": 31
    },
    {
      "id": "e7717fb9-7c76-447d-8b60-f8f4d918307b",
      "m1": "چنین گفت پس کوت را شهریار",
      "m2": "که روپیش آن مرد ابلق سوار",
      "verse_number": 32
    },
    {
      "id": "08cc6683-e650-419f-9b6f-c4f4f229ce16",
      "m1": "چوبیند تو را پیشت آید به جنگ",
      "m2": "تومگریز تا لب نخایی زننگ",
      "verse_number": 33
    },
    {
      "id": "71260680-373e-46fd-b38a-0011e9012b7c",
      "m1": "چوبشنید کوت این سخن بازگشت",
      "m2": "چنان شد که با باد انباز گشت",
      "verse_number": 34
    },
    {
      "id": "4ccc28b1-7f6f-4d4e-8cd3-99fd7e85b0f9",
      "m1": "همیرفت جوشان ونیزه بدست",
      "m2": "به آوردگه رفت چون پیل مست",
      "verse_number": 35
    },
    {
      "id": "51783f69-753d-4539-a615-a07f3e4f291e",
      "m1": "چو نزدیک شد خواست بهرام را",
      "m2": "برافراخت زانگونه زونام را",
      "verse_number": 36
    },
    {
      "id": "601b2f28-e870-42e6-b671-06bddb6b1b16",
      "m1": "یلان سینه بهرام را بانگ کرد",
      "m2": "که بیدارباش ای سوار نبرد",
      "verse_number": 37
    },
    {
      "id": "1b95cf12-2b47-480a-9856-67753b6510b6",
      "m1": "که آمد یکی دیو چون پیل مست",
      "m2": "کمندی بفتراک و نیزه بدست",
      "verse_number": 38
    },
    {
      "id": "3c200ab0-75cc-4165-8086-48d76b1df87a",
      "m1": "چو بهرام بشنید تیغ از نیام",
      "m2": "برآهخت چون باد و برگفت نام",
      "verse_number": 39
    },
    {
      "id": "c609fc8c-1545-469b-9985-262e65bd5421",
      "m1": "چوخسرو چنان دید برپای خاست",
      "m2": "ازان کوهسر سر برآورد راست",
      "verse_number": 40
    },
    {
      "id": "c7a2156a-8f12-485f-ba4d-4c8f74b9203f",
      "m1": "نهاده بکوت و به بهرام چشم",
      "m2": "دو دیده پر از آب و دل پر ز خشم",
      "verse_number": 41
    },
    {
      "id": "ab76c26a-0290-43bf-89cc-6ed9bd2a0011",
      "m1": "چو رومی به نیزه درآمد زجای",
      "m2": "جهانجوی بر جای بفشارد پای",
      "verse_number": 42
    },
    {
      "id": "c3747717-38dc-44e4-bed7-d09d0396a0af",
      "m1": "چو نیزه نیامد برو کارگر",
      "m2": "بروی اندر آورد جنگی سپر",
      "verse_number": 43
    },
    {
      "id": "d0e9ad51-fb6c-4036-9f83-403bb7f8fabb",
      "m1": "یکی تیغ زد بر سر و گردنش",
      "m2": "که تاسینه ببرید تیره تنش",
      "verse_number": 44
    },
    {
      "id": "a33b6508-b2fb-4121-a402-7d00fd7f8132",
      "m1": "چو آواز تیغش به خسرو رسید",
      "m2": "بخندید کان زخم بهرام دید",
      "verse_number": 45
    },
    {
      "id": "3809e9d5-e7a6-4668-af1f-9561b8ce1e6d",
      "m1": "نیاطوس جنگی بتابید چشم",
      "m2": "ازان خندهٔ خسرو آمد بخشم",
      "verse_number": 46
    },
    {
      "id": "ca785625-ed35-40de-b061-271cd45a21df",
      "m1": "به خسرو چنین گفت کای نامدار",
      "m2": "نه نیکو بود خنده درکارزار",
      "verse_number": 47
    },
    {
      "id": "fc1a10ed-3d61-48e5-a09e-df0e4bf6e8bd",
      "m1": "تو رانیست از روم جز کیمیا",
      "m2": "دلت خیره بینم بکین نیا",
      "verse_number": 48
    },
    {
      "id": "243c0e92-bd45-4092-8889-af314322844c",
      "m1": "چو کوت هزاره به ایران و روم",
      "m2": "نبینند هرگز به آباد بوم",
      "verse_number": 49
    },
    {
      "id": "9476f2e3-969e-4acc-99f3-0bc03c7b6f74",
      "m1": "بخندی کنون زانک اوکشته شد",
      "m2": "چنان دان که بخت تو برگشته شد",
      "verse_number": 50
    },
    {
      "id": "9beb1cb7-2757-4201-aa30-94ed21de391c",
      "m1": "بدو گفت خسرو من از کشتنش",
      "m2": "نخندم همی وز بریده تنش",
      "verse_number": 51
    },
    {
      "id": "8cb15279-a2d2-44b0-8f88-6893259f88b6",
      "m1": "چنان دان که هرکس که دارد فسوس",
      "m2": "همو یابد از چرخ گردنده کوس",
      "verse_number": 52
    },
    {
      "id": "da93412a-dfa8-4f90-adf4-2b43e180143d",
      "m1": "مرا گفت کز بنده بگریختی",
      "m2": "نبودت هنر تا نیاویختی",
      "verse_number": 53
    },
    {
      "id": "f878de96-7857-4d94-b05b-27441c9ad361",
      "m1": "ازان بنده بگریختن نیست ننگ",
      "m2": "که زخمش بدین سان بود روز جنگ",
      "verse_number": 54
    },
    {
      "id": "61bcd69e-3ae7-4900-a8bc-c074a80c317f",
      "m1": "وزان روی بهرام آواز داد",
      "m2": "کهای نامداران فرخ نژاد",
      "verse_number": 55
    },
    {
      "id": "218b9f33-d9e3-413e-ba65-fa4efcce96fa",
      "m1": "یلان سینه و رام و ایزد گسسپ",
      "m2": "مرین کشته را بست باید بر اسپ",
      "verse_number": 56
    },
    {
      "id": "183a0d4b-049c-430b-8479-aae1658ce9b4",
      "m1": "فرستید ز ایدر به لشکر گهش",
      "m2": "بدان تابریده ببیند شهش",
      "verse_number": 57
    },
    {
      "id": "c046fa91-7eb9-4e68-8005-f21e2b2c8624",
      "m1": "تن کوت رازود برپشت زین",
      "m2": "بتنگی ببستند مردان کین",
      "verse_number": 58
    },
    {
      "id": "557ee305-5c94-4d48-a0dc-92581eb18598",
      "m1": "دوان اسپ با مرد گردن فراز",
      "m2": "همیشد به لشکر گه خویش باز",
      "verse_number": 59
    },
    {
      "id": "5c358fd9-e178-46fb-946e-b42fa227282c",
      "m1": "دل خسرو ازکوت شد دردمند",
      "m2": "گشادند زان کشته بند کمند",
      "verse_number": 60
    },
    {
      "id": "ceb0d9f3-414e-4a93-aa3c-159c91b5ac61",
      "m1": "بران زخم او بر پراگند مشک",
      "m2": "بفرمود پس تا بکردند خشک",
      "verse_number": 61
    },
    {
      "id": "02158224-d538-484f-8f8f-a1d9f3543a74",
      "m1": "به کرباس بر دوختش همچنان",
      "m2": "زره دربر و تنگ بسته میان",
      "verse_number": 62
    },
    {
      "id": "fe43e4b6-4cd7-45b8-ba3e-75bc194b362a",
      "m1": "به نزدیک قیصر فرستاد باز",
      "m2": "که شمشیر این بندهٔ دیوساز",
      "verse_number": 63
    },
    {
      "id": "0847acc8-96c7-4a4e-9385-bfa0042c71b7",
      "m1": "برین گونه برد همی روز جنگ",
      "m2": "ازو گر هزیمت شدم نیست ننگ",
      "verse_number": 64
    },
    {
      "id": "ff2cdf77-0ac0-48b6-970b-cbc34782e281",
      "m1": "همه رو میان دلشکسته شدند",
      "m2": "به دل پاک بیجنگ خسته شدند",
      "verse_number": 65
    },
    {
      "id": "ab9b9a0c-f160-497f-805a-cc3d8f4da288",
      "m1": "همیریخت بطریق خونین سرشک",
      "m2": "همی رخ پر از آب و دل پر ز رشک",
      "verse_number": 66
    },
    {
      "id": "c956eef4-6351-4938-b355-eb3a7a8cfd65",
      "m1": "بیامد ز گردنکشان ده هزار",
      "m2": "همه جاثلیقان گرد و سوار",
      "verse_number": 67
    },
    {
      "id": "f829b9f7-bde4-4296-9948-f8bdc835bfc1",
      "m1": "یکی حمله بردند زان سان که کوه",
      "m2": "بدرید ز آواز رومی گروه",
      "verse_number": 68
    },
    {
      "id": "111a4052-89e4-4be4-997c-9b7870b24bd2",
      "m1": "چکاچک برخاست و بانگ سران",
      "m2": "همان زخم شمشیر و گرز گران",
      "verse_number": 69
    },
    {
      "id": "6e7277cf-7e43-4053-b74f-1dd99b6d5ba0",
      "m1": "توگفتی که دریا بجوشد همی",
      "m2": "سپهر روان بر خروشد همی",
      "verse_number": 70
    },
    {
      "id": "adc25c21-0ba8-4142-9b41-1698b66b9ef1",
      "m1": "ز بس کشته اندر میان سپاه",
      "m2": "بماندند بر جای بربسته راه",
      "verse_number": 71
    },
    {
      "id": "8c9d6c7c-9ce3-4edc-9413-8e9ac71e67ba",
      "m1": "ازان رومیان کشته شد لشکری",
      "m2": "هرآنکس که بود از دلیران سری",
      "verse_number": 72
    },
    {
      "id": "37c5eae8-1dfe-4495-bcac-9fe2dd32c7a3",
      "m1": "دل خسرو از درد ایشان بخست",
      "m2": "تن خسته زندگان راببست",
      "verse_number": 73
    },
    {
      "id": "5a194d51-051b-42aa-ba94-e92569b8bc86",
      "m1": "همه کشتگان رابهم برفکند",
      "m2": "تلی گشت برسان کوه بلند",
      "verse_number": 74
    },
    {
      "id": "2e85edf4-2dba-426d-b7db-e707dce6f0a1",
      "m1": "همیخواندندیش بهرام چید",
      "m2": "ببرید خسرو ز رومی امید",
      "verse_number": 75
    },
    {
      "id": "06b19238-5c23-410e-b4dd-4b934020f970",
      "m1": "همیگفت اگر نیز رومی دو بار",
      "m2": "کند همی برین گونه بر کارزار",
      "verse_number": 76
    },
    {
      "id": "9d778616-f78e-46b5-8d8a-844c39a5d4b7",
      "m1": "جهان را تو بیلشکر روم دان",
      "m2": "همان تیغ پولاد را موم دان",
      "verse_number": 77
    },
    {
      "id": "d941b13c-cde3-4531-809d-9c80ec2adb8e",
      "m1": "به سرگس چنین گفت پس شهریار",
      "m2": "که فردا مبر جنگیان را به کار",
      "verse_number": 78
    },
    {
      "id": "6e01b48e-f2bd-422c-9d62-9f04c1ab4e4c",
      "m1": "تو فردا بیاسای تا من سپاه",
      "m2": "بیارم ز ایرانیان کینه خواه",
      "verse_number": 79
    },
    {
      "id": "d421f407-8c13-425d-8cbf-76c7efa93bab",
      "m1": "بایرانیان گفت فردا به جنگ",
      "m2": "شما را بباید شدن بیدرنگ",
      "verse_number": 80
    },
    {
      "id": "2865cda7-1947-476e-bd10-f6518b5d8b93",
      "m1": "همه ویژه گفتند کایدون کنیم",
      "m2": "که کوه و بیابان پر از خون کنیم",
      "verse_number": 81
    }
  ],
