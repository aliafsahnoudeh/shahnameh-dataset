{
  "id": "659773e3-3431-40bf-bf81-90c868073dd0",
  "title": "بخش ۶۳",
  "verses": [
    {
      "id": "b1203e6c-c559-49d3-a5a9-6e48cf50d074",
      "m1": "به قیصر یکی نامه فرمود شاه",
      "m2": "که برنه سزاوار شاهی کلاه",
      "verse_number": 1
    },
    {
      "id": "35bc2e8a-f4a4-421c-bec2-8478af821f47",
      "m1": "که مریم پسر زاد زیبا یکی",
      "m2": "که هرگز ندیدی چنو کودکی",
      "verse_number": 2
    },
    {
      "id": "32a1ff46-21b6-4dd3-855b-ecab0535de5b",
      "m1": "نشاید مگر دانش و تخت را",
      "m2": "وگر در هنر بخشش و بخت را",
      "verse_number": 3
    },
    {
      "id": "750b19c0-3168-4901-8138-1c72a8aaa993",
      "m1": "چو من شادمانم تو شادان بزی",
      "m2": "که شاهی و گردنکشی را سزی",
      "verse_number": 4
    },
    {
      "id": "00e41e76-d352-4962-aba4-51db921cfb7b",
      "m1": "چو آن نامه نزدیک قیصر رسید",
      "m2": "نگه کرد و توقیع پرویز دید",
      "verse_number": 5
    },
    {
      "id": "9f463877-b0ca-47cf-815f-5e63ddf9d470",
      "m1": "بفرمود تا گاو دم بر درش",
      "m2": "دمیدند و پر بانگ شد کشورش",
      "verse_number": 6
    },
    {
      "id": "d62fe5f6-7329-44ea-8902-d10652866f94",
      "m1": "ببستند آیین به بیراه و راه",
      "m2": "پر آواز شیروی پرویز شاه",
      "verse_number": 7
    },
    {
      "id": "bf47bf8c-5c7a-42ef-bb5b-6426fa105303",
      "m1": "برآمد هم آواز رامشگران",
      "m2": "همه شهر روم از کران تا کران",
      "verse_number": 8
    },
    {
      "id": "fd699a9e-461a-449e-97ac-a95c4de4ab8f",
      "m1": "بدرگاه بردند چندی صلیب",
      "m2": "نسیم گلان آمد و بوی طیب",
      "verse_number": 9
    },
    {
      "id": "26905754-0545-42cb-882e-9aec915acadc",
      "m1": "بیک هفته زین گونه با رود و می",
      "m2": "ببودند شادان ز شیروی کی",
      "verse_number": 10
    },
    {
      "id": "b6b221c1-4413-48db-8705-cffbf0ed6f4f",
      "m1": "بهشتم بفرمود تا کاروان",
      "m2": "بیامد بدرگاه با ساروان",
      "verse_number": 11
    },
    {
      "id": "2a090bba-feb0-4fe5-8f22-9282fcf3c4db",
      "m1": "صد اشتر ز گنج درم بار کرد",
      "m2": "چو پنجه شتر بار دینار کرد",
      "verse_number": 12
    },
    {
      "id": "3258fbfc-a8ad-4716-b8bb-e6729640de79",
      "m1": "ز دیبای زربفت رومی دویست",
      "m2": "که گفتی ز زر جامه با رز یکیست",
      "verse_number": 13
    },
    {
      "id": "9296b742-8f6e-4e68-a852-facfb0bdcec2",
      "m1": "چهل خوان زرین پایه بسد",
      "m2": "چنان کز در شهر یاران سزد",
      "verse_number": 14
    },
    {
      "id": "c42296d9-27e0-45e2-8856-a1e7f334976e",
      "m1": "همان چند زرین و سیمین دده",
      "m2": "بگوهر بر و چشمشان آژده",
      "verse_number": 15
    },
    {
      "id": "2a0fbeda-f29d-4f33-a33c-fac0303e640d",
      "m1": "بمریم فرستاد چندی گهر",
      "m2": "یکی نره طاوس کرده بزر",
      "verse_number": 16
    },
    {
      "id": "4605586b-ec1a-4416-bb24-7825c7b57f7f",
      "m1": "چه از جامهٔ نرم رومی حریر",
      "m2": "ز در و زبرجد یکی آبگیر",
      "verse_number": 17
    },
    {
      "id": "591cfeca-8f0a-4f85-91b0-e2cd0e587bd4",
      "m1": "همان باژ کشور که تا چار بار",
      "m2": "ز دینار رومی هزاران هزار",
      "verse_number": 18
    },
    {
      "id": "ea6b8a67-ce74-42dc-98db-7bd8c0dd053f",
      "m1": "فرستاد چون مرد رومی چهل",
      "m2": "کجا هر چهل بود بیدار دل",
      "verse_number": 19
    },
    {
      "id": "5e84fda9-efee-4a5e-87d0-d3fd36848236",
      "m1": "گوی پیش رو نام او خانگی",
      "m2": "که همتا نبودش به فرزانگی",
      "verse_number": 20
    },
    {
      "id": "9c9e88df-0734-49fd-ab33-e0f9d35357bd",
      "m1": "همیشد برین گونه با ساروان",
      "m2": "شتربار دینار ده کاروان",
      "verse_number": 21
    },
    {
      "id": "3bb9246b-5c23-4c88-b1ec-05f994a97240",
      "m1": "چوآگاهی آمد به پرویز شاه",
      "m2": "که پیغمبر قیصر آمد ز راه",
      "verse_number": 22
    },
    {
      "id": "4b010dce-ad76-4354-ac6b-f1fc4b43f501",
      "m1": "به فرخ بفرمود تا برنشست",
      "m2": "یکی مرزبان بود خسروپرست",
      "verse_number": 23
    },
    {
      "id": "2299f0e3-c329-4955-887d-e51daf353b17",
      "m1": "که سالار او بود بر نیمروز",
      "m2": "گرانمایه گردی و گیتی فروز",
      "verse_number": 24
    },
    {
      "id": "4eb40c9b-0764-4063-90c1-a1ed203726cf",
      "m1": "برفتند با او سواران شاه",
      "m2": "به سر برنهادند زرین کلاه",
      "verse_number": 25
    },
    {
      "id": "a429817d-b8a0-4b27-9525-2c2503bb153f",
      "m1": "چو از دور دید آن سپه خانگی",
      "m2": "به پیش اندر آمد به بیگانگی",
      "verse_number": 26
    },
    {
      "id": "b222a15b-cdfd-4207-999a-b2e0628d0d8c",
      "m1": "چنین تا به نزدیک شاه آمدند",
      "m2": "بران نامور پیشگاه آمدند",
      "verse_number": 27
    },
    {
      "id": "fee49ecb-e6d2-47e9-9d40-5674784b5ddd",
      "m1": "چو دیدند زیبا رخ شاه را",
      "m2": "بران گونه آراستهگاه را",
      "verse_number": 28
    },
    {
      "id": "c7bdad91-4d7a-4970-ac72-60bc3e329da2",
      "m1": "نهادند همواره سر بر زمین",
      "m2": "برو بر همیخواندند آفرین",
      "verse_number": 29
    },
    {
      "id": "28284c1f-07fb-4614-af1e-5830f42eb207",
      "m1": "بمالید پس خانگی رخ بخاک",
      "m2": "همیگفت کای داور داد وپاک",
      "verse_number": 30
    },
    {
      "id": "a55109a0-03fb-44b3-9848-979e65579747",
      "m1": "ز پیروزگر آفرین بر تو باد",
      "m2": "مبادی همیشه مگر شاه و راد",
      "verse_number": 31
    },
    {
      "id": "8bfd9d8c-a036-4612-ac67-335ed3988406",
      "m1": "بزرگانش از جای برخاستند",
      "m2": "به نزدیک شه جایش آراستند",
      "verse_number": 32
    },
    {
      "id": "dbcc3f76-5392-4cff-9d73-25471435ec47",
      "m1": "چنین گفت پس شاه را خانگی",
      "m2": "که چون تو که باشد به فرزانگی",
      "verse_number": 33
    },
    {
      "id": "5f1845f9-cc65-44e7-a934-1862e308d62b",
      "m1": "ز خورشید بر چرخ تابندهتر",
      "m2": "ز جان سخنگوی پایندهتر",
      "verse_number": 34
    },
    {
      "id": "991c108b-1caf-4fed-83a4-f4d798e283ed",
      "m1": "مبادا جهان بیچنین شهریار",
      "m2": "برومند بادا برو روزگار",
      "verse_number": 35
    },
    {
      "id": "312d6c19-2ff6-402a-8e78-1b75eab3976e",
      "m1": "مبیناد کس روز بیکام تو",
      "m2": "نوشته بخورشید بر نام تو",
      "verse_number": 36
    },
    {
      "id": "379a832b-c481-4757-aca7-9121567b4c46",
      "m1": "جهان بی سر و افسر تو مباد",
      "m2": "بر و بوم بی لشکر تو مباد",
      "verse_number": 37
    },
    {
      "id": "04efb95a-303e-4755-9c0c-f311953e49d4",
      "m1": "ز قیصر درود و ز ما آفرین",
      "m2": "برین نامور شهریار زمین",
      "verse_number": 38
    },
    {
      "id": "5bb28e53-a597-491a-a110-6104d69c4a09",
      "m1": "کسی کو درین سایهٔ شاه شاد",
      "m2": "نباشد ورا روشنایی مباد",
      "verse_number": 39
    },
    {
      "id": "0d9a704b-776c-4f92-94d8-ba4e8b27b736",
      "m1": "ابا هدیه و باژ روم آمدم",
      "m2": "برین نامبردار بوم آمدم",
      "verse_number": 40
    },
    {
      "id": "a14f3fe3-9785-470b-b7de-fb656a0c955d",
      "m1": "برفتیم با فیلسوفان بهم",
      "m2": "بران تا نباشد کس از ما دژم",
      "verse_number": 41
    },
    {
      "id": "b58d7e19-0f59-4679-ad31-8fe9c5e87130",
      "m1": "ز قیصر پذیرد مگر باژ و چیز",
      "m2": "که با باژ و چیز آفرینست نیز",
      "verse_number": 42
    },
    {
      "id": "bde1306a-05bc-401d-a84e-c4a5276890bc",
      "m1": "بخندید از آن پر هنر مرد شاه",
      "m2": "نهادند زرین یکی پیشگاه",
      "verse_number": 43
    },
    {
      "id": "bb15ec11-0fa6-410e-8a55-ee07bd75771a",
      "m1": "فرستاد پس چیزها سوی گنج",
      "m2": "بدو گفت چندین نبایست رنج",
      "verse_number": 44
    },
    {
      "id": "f4db325f-f577-4c44-b3c0-d2060711e708",
      "m1": "بخراد برزین چنین گفت شاه",
      "m2": "که این نامه برخوان به پیش سپاه",
      "verse_number": 45
    },
    {
      "id": "54c5cf7e-b421-460c-b0f8-1f314f8c98e7",
      "m1": "به عنوان نگه کرد مرد دبیر",
      "m2": "که گویندهای بود و هم یادگیر",
      "verse_number": 46
    },
    {
      "id": "9ba64496-a038-40b5-a04f-bf28fccbddac",
      "m1": "چنین گفت کاین نامه سوی مهست",
      "m2": "جهاندار پرویز یزدان پرست",
      "verse_number": 47
    },
    {
      "id": "dc829b8d-4b6a-47ae-b11e-9f98f8a1f123",
      "m1": "جهاندار و بیدار و پدرام شهر",
      "m2": "که یزدانش تاج و خرد داد بهر",
      "verse_number": 48
    },
    {
      "id": "e548180b-5d76-43ba-b8da-82854ca419b8",
      "m1": "جهاندار فرزند هرمزد شاه",
      "m2": "که زیبای تاج است و زیبای گاه",
      "verse_number": 49
    },
    {
      "id": "932d8da7-3a03-4564-8194-df56f6513fa7",
      "m1": "ز قیصر پدر مادر شیر نام",
      "m2": "که پاینده بادا بدو نام و کام",
      "verse_number": 50
    },
    {
      "id": "4fafb9d1-ed80-4e4b-a3ee-08350869aa65",
      "m1": "ابا فر و با برز و پیروز باد",
      "m2": "همه روزگارانش نوروز باد",
      "verse_number": 51
    },
    {
      "id": "aa7dce41-9c42-4479-a778-dcb5b18b79b8",
      "m1": "به ایران و تورانش بر دست رس",
      "m2": "به شاهی مباداش انباز کس",
      "verse_number": 52
    },
    {
      "id": "fe92b4e1-d084-436a-84b1-269a9d3a4fd1",
      "m1": "همیشه به دل شاد و روشن روان",
      "m2": "همیشه خرد پیر و دولت جوان",
      "verse_number": 53
    },
    {
      "id": "99dbe9be-16a7-4390-b5f0-154d14db51e2",
      "m1": "گران مایه شاهی کیومرثی",
      "m2": "همان پور هوشنگ طهمورثی",
      "verse_number": 54
    },
    {
      "id": "a180be7d-52cd-43d5-9583-1f952bc717b0",
      "m1": "پدر بر پدر و پسر بر پسر",
      "m2": "مبادا که این گوهر آید به سر",
      "verse_number": 55
    },
    {
      "id": "ebd4ccf8-49cc-4420-bbc5-a39d348946e8",
      "m1": "برین پاک یزدان کند آفرین",
      "m2": "بزرگان ملک و بزرگان دین",
      "verse_number": 56
    },
    {
      "id": "d2b2714d-a2b6-4b68-9e1b-a7f4c63d5ae8",
      "m1": "نه چون تو خزان و نه چون تو بهار",
      "m2": "نه چون تو بایوان چین بر نگار",
      "verse_number": 57
    },
    {
      "id": "357b1fb1-8615-4aae-b87f-5487731561a0",
      "m1": "همه مردمی و همه راستی",
      "m2": "مبیناد جانت بد کاستی",
      "verse_number": 58
    },
    {
      "id": "6fd7ac7d-76de-4f19-b1c8-17026a8ba1b6",
      "m1": "به ایران و توران و هندوستان",
      "m2": "همان ترک تا روم و جادوستان",
      "verse_number": 59
    },
    {
      "id": "54b7dc60-6d66-475b-8046-5152b86ca5c2",
      "m1": "تو را داد یزدان به پاکی نژاد",
      "m2": "کسی چون تو از پاک مادر نزاد",
      "verse_number": 60
    },
    {
      "id": "643d636a-f2d3-4b5d-8d66-ea97b8df1942",
      "m1": "فریدون چو ایران بایرج سپرد",
      "m2": "ز روم و ز چین نام مردی ببرد",
      "verse_number": 61
    },
    {
      "id": "d8f79178-be11-41f6-b705-c5733b406efa",
      "m1": "برو آفرین کرد روز نخست",
      "m2": "دلش را ز کژی و تاری بشست",
      "verse_number": 62
    },
    {
      "id": "0b1233df-3dcc-43ec-8a23-2be1a1a9f843",
      "m1": "همه بی نیازی و نیک اختری",
      "m2": "بزرگی و مردی و افسونگری",
      "verse_number": 63
    },
    {
      "id": "ab291767-3fc1-4447-9b6d-255f67fbccfd",
      "m1": "تو گویی که یزدان شما را سپرد",
      "m2": "وزان دیگران نام مردی ببرد",
      "verse_number": 64
    },
    {
      "id": "e591f530-e920-44e2-9898-79604d7e5d66",
      "m1": "هنر پرور و راد و بخشنده گنج",
      "m2": "ازین تخمهٔ هرگز نبد کس به رنج",
      "verse_number": 65
    },
    {
      "id": "65ff852b-570b-4d4e-a093-2142ddf8f7b1",
      "m1": "نهادند بر دشمنان باژ و ساو",
      "m2": "بد اندیشتان بارکش همچو گاو",
      "verse_number": 66
    },
    {
      "id": "16a8a9c1-ee28-4f89-9df0-9e1346b8f62a",
      "m1": "ز هنگام کسری نوشین روان",
      "m2": "که بادا همیشه روانش جوان",
      "verse_number": 67
    },
    {
      "id": "18c55868-7d6e-4bc6-8618-c3afe595c010",
      "m1": "که از ژرف دریا برآورد پی",
      "m2": "بران گونه دیوار بیدار کی",
      "verse_number": 68
    },
    {
      "id": "88d02bc9-e7a4-46a8-942a-89e59ef586ce",
      "m1": "ز ترکان همه بیشهٔ نارون",
      "m2": "بشستند وبی رنج گشت انجمن",
      "verse_number": 69
    },
    {
      "id": "ec7642c2-a729-4bfc-9c34-075bc17ced5f",
      "m1": "ز دشمن برستند چندی جهان",
      "m2": "برو آفرین از کهان و مهان",
      "verse_number": 70
    },
    {
      "id": "7d3d05eb-4d63-48e7-8850-683c91d95a4e",
      "m1": "ز تازی و هندی و ایرانیان",
      "m2": "ببستند پیشش کمر بر میان",
      "verse_number": 71
    },
    {
      "id": "285024da-71ff-48d7-a6fe-9afef6a45495",
      "m1": "روارو چنین تا به مرز خزر",
      "m2": "ز ارمینیه تا در باختر",
      "verse_number": 72
    },
    {
      "id": "a4817da3-7e86-4caa-bd71-5e8dc5625002",
      "m1": "ز هیتال و ترک و سمرقند و چاچ",
      "m2": "بزرگان با فر و اورند وتاج",
      "verse_number": 73
    },
    {
      "id": "cb84f8c7-0c70-408f-91a2-9ea2939a7475",
      "m1": "همه کهتران شما بودهاند",
      "m2": "برین بندگی بر گوا بودهاند",
      "verse_number": 74
    },
    {
      "id": "63f0104b-42c4-4803-a9a6-1ba6d81dc0ae",
      "m1": "که شاهان ز تخم فریدون بدند",
      "m2": "دگر یکسر از داد بیرون بدند",
      "verse_number": 75
    },
    {
      "id": "cc07723f-6238-4a8e-a700-62dd0888cbc0",
      "m1": "بدین خویشی اکنون که من کردهام",
      "m2": "بزرگی به دانش برآوردهام",
      "verse_number": 76
    },
    {
      "id": "9a421458-9c23-49dc-9887-2ce6d223681a",
      "m1": "بدان گونه شادم که تشنه بر آب",
      "m2": "وگر سبزهٔ تیره بر آفتاب",
      "verse_number": 77
    },
    {
      "id": "85c6dc0e-03f9-418b-bf39-1fecdddf360d",
      "m1": "جهاندار بیدار فرخ کناد",
      "m2": "مرا اندرین روز پاسخ کناد",
      "verse_number": 78
    },
    {
      "id": "8d0ccddc-285a-4478-b7fb-880864e08ca6",
      "m1": "یکی آرزو خواهم از شهریار",
      "m2": "کجا آن سخن نزد او هست خوار",
      "verse_number": 79
    },
    {
      "id": "92545c79-ced8-400b-ba1b-2638a70e013d",
      "m1": "که دار مسیحا به گنج شماست",
      "m2": "چو بینید دانید گفتار راست",
      "verse_number": 80
    },
    {
      "id": "f441e979-aca5-4919-a3cf-cbe1db33a58f",
      "m1": "برآمد برین سالیان دراز",
      "m2": "سزد گر فرستد بما شاه باز",
      "verse_number": 81
    },
    {
      "id": "5576a6ad-1605-466e-8026-a0af255ebfe5",
      "m1": "بدین آرزو شهریار جهان",
      "m2": "ببخشاید از ما کهان و مهان",
      "verse_number": 82
    },
    {
      "id": "c4b6cf5a-1d08-4a5a-9182-a0035d034d0c",
      "m1": "ز گیتی برو بر کنند آفرین",
      "m2": "که بی تو مبادا زمان و زمین",
      "verse_number": 83
    },
    {
      "id": "b32fbacb-dd90-4084-98b3-ad8e33c806d6",
      "m1": "بدان من ز خسرو پذیرم سپاس",
      "m2": "نیایش کنم روز و شب در سه پاس",
      "verse_number": 84
    },
    {
      "id": "6ac0a62d-5c45-41d0-9ca3-d696e7db5ef5",
      "m1": "همان هدیه و باژ و ساوی که من",
      "m2": "فرستم به نزدیک آن انجمن",
      "verse_number": 85
    },
    {
      "id": "e1861f93-91e6-4128-9471-3c523be79188",
      "m1": "پذیرد پذیرم سپاسی بدان",
      "m2": "مبیناد چشم تو روی بدان",
      "verse_number": 86
    },
    {
      "id": "220f7b6b-bbca-44d9-bf70-b83bceabc9ab",
      "m1": "شود فرخ این جشن و آیین ما",
      "m2": "درخشان شود در جهان دین ما",
      "verse_number": 87
    },
    {
      "id": "c26d5c59-123c-45ea-88a4-5a09a6666722",
      "m1": "همان روزهٔ پاک یکشنبدی",
      "m2": "ز هر در پرستندهٔ ایزدی",
      "verse_number": 88
    },
    {
      "id": "0a9531fe-e81f-4365-8aa8-e87972b85de2",
      "m1": "برو سوکواران بمالند روی",
      "m2": "بروبر فراوان بسایند موی",
      "verse_number": 89
    },
    {
      "id": "692c864f-20e0-436f-8cde-de6f4d3d1522",
      "m1": "شود آن زمان بر دل ما درست",
      "m2": "که از کینه دلها بخواهیم شست",
      "verse_number": 90
    },
    {
      "id": "cabb87b5-8d90-487c-a18f-603eab47e103",
      "m1": "که بود از گه آفریدون فراز",
      "m2": "که با تور و سلم اندر آمد براز",
      "verse_number": 91
    },
    {
      "id": "de2d37dd-8720-453f-b331-24c8fdf534fd",
      "m1": "شود کشور آسوده از تاختن",
      "m2": "به هر گوشهای کینه ها ساختن",
      "verse_number": 92
    },
    {
      "id": "14749122-566b-47fc-98aa-98f92d691530",
      "m1": "زن و کودک رومیان بردهاند",
      "m2": "دل ما ز هر گونه آزردهاند",
      "verse_number": 93
    },
    {
      "id": "d7818673-9fff-4b6a-9b41-a66c4427ffce",
      "m1": "برین خویشی ما جهان رام گشت",
      "m2": "همه کار بیهوده پدرام گشت",
      "verse_number": 94
    },
    {
      "id": "9a311741-7a0b-460a-bc88-99e390b9532f",
      "m1": "درود جهان آفرین بر تو باد",
      "m2": "همان آفرین زمین بر تو باد",
      "verse_number": 95
    },
    {
      "id": "8b01895d-f917-4e94-82b2-e1abf50dee6d",
      "m1": "چو آن نامهٔ قیصر آمد ببن",
      "m2": "جهاندار بشنید چندان سخن",
      "verse_number": 96
    },
    {
      "id": "bb16cea5-2c63-4b4d-a74b-7b0d2a212e2f",
      "m1": "ازان نامه شد شاه خرم نهان",
      "m2": "برو تازه شد روزگار مهان",
      "verse_number": 97
    },
    {
      "id": "e0e9a768-b74a-499f-8d6d-570f47391d33",
      "m1": "بسی آفرین کرد برخانگی",
      "m2": "بدو گفت بس کن ز بیگانگی",
      "verse_number": 98
    },
    {
      "id": "1fd9d7a7-0b6c-469e-8967-50603c70d525",
      "m1": "گرانمایه را جایگه ساختند",
      "m2": "دو ایوان فرخ بپرداختند",
      "verse_number": 99
    },
    {
      "id": "e09a1b6a-f514-47e7-bfb5-aa5848e43fcb",
      "m1": "ببردند چیزی که بایست برد",
      "m2": "به نزدیک آن مرد بیدار گرد",
      "verse_number": 100
    },
    {
      "id": "e9fa004d-2cb0-42e5-8f90-524d97d7c41e",
      "m1": "بیامد بدید آن گزین جایگاه",
      "m2": "وزان پس همیبود نزدیک شاه",
      "verse_number": 101
    },
    {
      "id": "433894aa-ed92-44e0-a2b3-67277cf4cf29",
      "m1": "بخوان و نبید و شکار و نشست",
      "m2": "همیبود با شاه مهتر پرست",
      "verse_number": 102
    },
    {
      "id": "7e53db71-167b-4000-9044-e4ce441244c4",
      "m1": "برین گونه یک ماه نزدیک شاه",
      "m2": "همیبود شادان دل و نیک خواه",
      "verse_number": 103
    }
  ],
