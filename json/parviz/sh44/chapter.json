{
  "id": "61f55ca8-f44a-4655-b9ce-3f91df3027e9",
  "title": "بخش ۴۴",
  "verses": [
    {
      "id": "847dc624-05a5-4981-ae95-cf8388d98d93",
      "m1": "ازان پس چو بشنید بهرام گرد",
      "m2": "کز ایران به خاقان کسی نامه برد",
      "verse_number": 1
    },
    {
      "id": "c69d60f5-0995-4e04-ba39-de133ebe84d2",
      "m1": "بیامد دمان پیش خاقان چین",
      "m2": "بدو گفت کای مهتر به آفرین",
      "verse_number": 2
    },
    {
      "id": "7d2556d2-1511-41ec-bf0d-b39c4627459c",
      "m1": "شنیدم که آن ریمن بد هنر",
      "m2": "همی نامه سازد یک اندر دگر",
      "verse_number": 3
    },
    {
      "id": "67a32848-abf3-4317-b484-93be10abbf28",
      "m1": "سپاهی دلاور ز چین برگزین",
      "m2": "بدان تا تو را گردد ایران زمین",
      "verse_number": 4
    },
    {
      "id": "3446543f-fb1c-4f38-b593-2c6828679703",
      "m1": "بگیرم به شمشیر ایران و روم",
      "m2": "تو راشاه خوانم بران مرز و بوم",
      "verse_number": 5
    },
    {
      "id": "18b94a01-665a-4868-ac2e-d2b4a67ad650",
      "m1": "بنام تو بر پاسبانان به شب",
      "m2": "به ایران و توران گشایند لب",
      "verse_number": 6
    },
    {
      "id": "96238e15-323c-4bd9-a90f-4ba03fd340c0",
      "m1": "ببرم سر خسرو بیهنر",
      "m2": "که مه پای بادا ازیشان مه سر",
      "verse_number": 7
    },
    {
      "id": "9a680c13-c241-4451-97d7-150afdea765a",
      "m1": "چون من کهتری را ببندم میان",
      "m2": "ز بن برکنم تخم ساسانیان",
      "verse_number": 8
    },
    {
      "id": "53d4b70b-90fc-43c6-bb7e-ac719e23d5d9",
      "m1": "چو بشنید خاقان پر اندیشه شد",
      "m2": "ورا در دل اندیشه چون بیشه شد",
      "verse_number": 9
    },
    {
      "id": "be49e386-7c52-4cc5-89fe-859699c13f42",
      "m1": "بخواند آنکسان را که بودند پیر",
      "m2": "سخنگوی و داننده و یادگیر",
      "verse_number": 10
    },
    {
      "id": "84e2901a-9e12-4a3d-8f69-797c51db4e96",
      "m1": "بدیشان بگفت آنچ بهرام گفت",
      "m2": "همه رازها برگشاد از نهفت",
      "verse_number": 11
    },
    {
      "id": "3e32e940-bae4-4059-8da5-800f4eb51eae",
      "m1": "چنین یافت پاسخ ز فرزانگان",
      "m2": "ز خویشان نزدیک و بیگانگان",
      "verse_number": 12
    },
    {
      "id": "fd6fe97b-80a1-418e-9604-67a5c7069a4f",
      "m1": "که این کارخوارست و دشوارنیز",
      "m2": "که بر تخم ساسان پرآمد قفیز",
      "verse_number": 13
    },
    {
      "id": "08b40677-5618-49a6-9ebb-07878437ad17",
      "m1": "ولیکن چو بهرم راند سپاه",
      "m2": "نماید خردمند را رای و راه",
      "verse_number": 14
    },
    {
      "id": "681dfc2f-c701-41fb-a694-93bd2bf9e39a",
      "m1": "به ایران بسی دوستدارش بود",
      "m2": "چو خاقان یکی خویش و یارش بود",
      "verse_number": 15
    },
    {
      "id": "dcdc4c6e-dfeb-41de-bff3-72fa59feefce",
      "m1": "برآید ببخت تو این کار زود",
      "m2": "سخنهای بهرام باید شنود",
      "verse_number": 16
    },
    {
      "id": "3a97d433-de0b-466d-8742-032283b9b537",
      "m1": "چو بشنید بهرام دل تازه شد",
      "m2": "بخندید و بر دیگر اندازه شد",
      "verse_number": 17
    },
    {
      "id": "33adcfb0-8145-411c-a1b5-ccb2f6a450e2",
      "m1": "بران برنهادند یکسر گوان",
      "m2": "که بگزید باید دو مردجوان",
      "verse_number": 18
    },
    {
      "id": "3f93b8ea-045a-4916-83a4-a96e6c27706e",
      "m1": "که زیبد بران هر دو بر مهتری",
      "m2": "همان رنج کش باید و لشکری",
      "verse_number": 19
    },
    {
      "id": "819db932-14e4-4586-a59f-a956888fe81f",
      "m1": "به چین مهتری بود حسنوی نام",
      "m2": "دگر سرکشی بود زنگوی نام",
      "verse_number": 20
    },
    {
      "id": "4e7c10d2-e801-4432-bf05-65508bd22bdb",
      "m1": "فرستاد خاقان یلان رابخواند",
      "m2": "به دیوان دینار دادن نشاند",
      "verse_number": 21
    },
    {
      "id": "7dc6d104-6b28-4782-ba5e-6f1e39233949",
      "m1": "چنین گفت مهتر بدین هر دو مرد",
      "m2": "که هشیار باشید روز نبرد",
      "verse_number": 22
    },
    {
      "id": "1f085a96-a8c5-4385-a3be-f5fe7154a8a6",
      "m1": "همیشه به بهرام دارید چشم",
      "m2": "چه هنگام شادی چه هنگام خشم",
      "verse_number": 23
    },
    {
      "id": "603752e9-abb7-4317-a43c-1b30f6f7d606",
      "m1": "گذرهای جیحون بدارید پاک",
      "m2": "ز جیحون به گردون برآرید خاک",
      "verse_number": 24
    },
    {
      "id": "1ab66ea8-1a52-4128-aedc-9c87e5ff378d",
      "m1": "سپاهی دلاور بدیشان سپرد",
      "m2": "همه نامداران و شیران گرد",
      "verse_number": 25
    },
    {
      "id": "540dfa5a-b46f-4920-b72f-03c86e86f613",
      "m1": "برآمد ز درگاه بهرام کوس",
      "m2": "رخ خورشد از گرد چون آبنوس",
      "verse_number": 26
    },
    {
      "id": "78ea35cc-ffc7-4593-bcb5-2faaa214c291",
      "m1": "ز چین روی یکسر به ایران نهاد",
      "m2": "به روز سفندار مذ بامداد",
      "verse_number": 27
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 27
  }
}