{
  "id": "d380b033-4319-40d8-be74-64c792c5d69e",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "e0e46b4b-8ede-426a-98ac-4e2b7210088b",
      "m1": "چو خسرو نشست از برتخت زر",
      "m2": "برفتند هرکس که بودش هنر",
      "verse_number": 1
    },
    {
      "id": "d657e18b-7e9f-429b-90fd-c6e16e7b3382",
      "m1": "گرانمایگان را همه خواندند",
      "m2": "بر آن تاج نو گوهر افشاندند",
      "verse_number": 2
    },
    {
      "id": "a851ea26-f22b-488b-a11e-5ac1877d3276",
      "m1": "به موبد چنین گفت کاین تاج وتخت",
      "m2": "نیابد مگر مردم نیک بخت",
      "verse_number": 3
    },
    {
      "id": "4f65853b-40a7-46c4-8031-a2e4f1566d26",
      "m1": "مبادا مرا پیشه جز راستی",
      "m2": "که بیدادی آرد همه کاستی",
      "verse_number": 4
    },
    {
      "id": "17f7a021-e1a2-43d2-b6e2-db30d2c0ad70",
      "m1": "ابا هرکسی رای ما آشتیست",
      "m2": "ز پیکار کردن سرماتهیست",
      "verse_number": 5
    },
    {
      "id": "1703979e-ab81-40f7-89b4-1d66f6a910c7",
      "m1": "ز یزدان پذیرفتم این تخت نو",
      "m2": "همین روشن و مایه وربخت نو",
      "verse_number": 6
    },
    {
      "id": "0ba4661f-6f75-46d1-b1d6-7ce216d29c72",
      "m1": "شما نیز دلها بفرمان دهید",
      "m2": "بهرکار بر ما سپاسی نهید",
      "verse_number": 7
    },
    {
      "id": "31fd54c5-3fd1-4680-9950-7d5b8ca32cd7",
      "m1": "از آزردن مردم پارسا",
      "m2": "و دیگر کشیدن سر از پادشا",
      "verse_number": 8
    },
    {
      "id": "cae46766-2415-4111-b03b-89dbd52577e4",
      "m1": "سوم دور بودن ز چیز کسان",
      "m2": "که دودش بود سوی آنکس رسان",
      "verse_number": 9
    },
    {
      "id": "9c5dc20b-3ec6-46d0-b459-4da7ec19913c",
      "m1": "که درگاه و بیگه کسی رابسوخت",
      "m2": "ببی مایه چیزی دلش برفروخت",
      "verse_number": 10
    },
    {
      "id": "f668e796-c1b0-4515-94d4-a0d421a7e024",
      "m1": "دگر هرچ در مردمی در خورد",
      "m2": "مر آن را پذیرنده باشد خرد",
      "verse_number": 11
    },
    {
      "id": "f88e934b-84b8-457a-84eb-8c08b538370e",
      "m1": "نباشد مرا باکسی داوری",
      "m2": "اگر تاج جوید گر انگشتری",
      "verse_number": 12
    },
    {
      "id": "c7af467b-8a06-415e-b624-039401a3c8b2",
      "m1": "کرا گوهر تن بود با نژاد",
      "m2": "نگوید سخن با کسی جز بداد",
      "verse_number": 13
    },
    {
      "id": "9bf24125-5227-4167-8bf9-847309980908",
      "m1": "نباشد شما را جز از ایمنی",
      "m2": "نیازد بکردار آهرمنی",
      "verse_number": 14
    },
    {
      "id": "a639f6f9-91eb-4e0c-8064-68cd53f966fd",
      "m1": "هرآنکس که بشنید گفتار شاه",
      "m2": "همی آفرین خواند برتاج و گاه",
      "verse_number": 15
    },
    {
      "id": "a3878883-334b-4756-b8b6-6521a1382f8e",
      "m1": "برفتند شاد از بر تخت او",
      "m2": "بسی آفرین بود بر بخت او",
      "verse_number": 16
    },
    {
      "id": "4726daf5-10a7-4ad3-a29b-21d84f670984",
      "m1": "سپهبد فرود آمد از تخت شاد",
      "m2": "همه شب ز هرمز همیکرد یاد",
      "verse_number": 17
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 17
  },
