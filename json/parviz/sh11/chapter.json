{
  "id": "17664b7d-fb68-406b-9e8a-3c757397191a",
  "title": "بخش ۱۱",
  "verses": [
    {
      "id": "b6538b43-332a-423c-a70d-3c6657ceabd0",
      "m1": "چوبهرام رفت اندر ایوان شاه",
      "m2": "گزین کرد زان لشکر کینه خواه",
      "verse_number": 1
    },
    {
      "id": "5147911c-55a8-404e-ade1-9cf5d200011a",
      "m1": "زرهدار و شمشیر زن سیهزار",
      "m2": "بدان تا شوند از پس شهریار",
      "verse_number": 2
    },
    {
      "id": "941c20cd-d21f-46a6-9cda-ac5f40a6e6f3",
      "m1": "چنین لشکری نامبردار و گرد",
      "m2": "ببهرام پور سیاوش سپرد",
      "verse_number": 3
    },
    {
      "id": "a63ccc24-df44-4154-ade4-5acc63aca8dd",
      "m1": "وزان روی خسرو بیابان گرفت",
      "m2": "همی از بد دشمنان جان گرفت",
      "verse_number": 4
    },
    {
      "id": "17adecce-06fb-4be8-b4d0-b88bc5be56ae",
      "m1": "چنین تا بنزد رباطی رسید",
      "m2": "سر تیغ دیوار او ناپدید",
      "verse_number": 5
    },
    {
      "id": "b2355983-c0a3-4437-b1a0-1f791a7d001d",
      "m1": "کجا خواندندیش یزدان سرای",
      "m2": "پرستشگهی بود و فرخنده جای",
      "verse_number": 6
    },
    {
      "id": "a642110e-89b4-4406-aa1f-1ca3c0060d45",
      "m1": "نشستنگه سوکواران بدی",
      "m2": "بدو در سکوبا و مطران بدی",
      "verse_number": 7
    },
    {
      "id": "91687a91-fe73-4468-9459-abf759ed1935",
      "m1": "چنین گفت خسرو به یزدان پرست",
      "m2": "که از خوردنی چیست کاید بدست",
      "verse_number": 8
    },
    {
      "id": "cfdc6c23-6011-46a3-baf5-9d65bfb3a093",
      "m1": "سکوبا بدو گفت کای نامدار",
      "m2": "فطیرست با ترهٔ جویبار",
      "verse_number": 9
    },
    {
      "id": "36c6b951-40dd-40ed-ad25-54f394d43a1a",
      "m1": "گرای دون که شاید بدین سان خورش",
      "m2": "مبادت جز از نوشه این پرورش",
      "verse_number": 10
    },
    {
      "id": "1a6477f9-a57d-45d8-aebf-4b8f72a4b298",
      "m1": "ز اسب اندر آمد سبک شهریار",
      "m2": "همان آنک بودند با اوسوار",
      "verse_number": 11
    },
    {
      "id": "3e21151f-e38a-4fdf-834d-d8e08e976bb5",
      "m1": "جهانجوی با آن دو خسرو پرست",
      "m2": "گرفت از پی واژ برسم بدست",
      "verse_number": 12
    },
    {
      "id": "a805bc74-779e-4704-b041-81e2ee0e4b44",
      "m1": "بخوردند با شتاب چیزی که بود",
      "m2": "پس آنگه به زمزم بگفتند زود",
      "verse_number": 13
    },
    {
      "id": "6416bfa0-cc09-4c57-adaa-45d4ada01dfb",
      "m1": "چنین گفت پس با سکوبا که می",
      "m2": "نداری تو ای پیرفرخنده پی",
      "verse_number": 14
    },
    {
      "id": "324ae13d-1c32-4724-9887-15554818abcd",
      "m1": "بدو گفت ما میزخرما کنیم",
      "m2": "به تموز وهنگام گرما کنیم",
      "verse_number": 15
    },
    {
      "id": "ff759229-a499-440f-bc21-d9d5d1a0030d",
      "m1": "کنون هست لختی چو روشن گلاب",
      "m2": "به سرخی چو بیجاده در آفتاب",
      "verse_number": 16
    },
    {
      "id": "4653e53e-3e10-4722-966f-d6fb821ebc40",
      "m1": "هم آنگه بیاورد جامی نبید",
      "m2": "که شد رنگ خورشید زو ناپدید",
      "verse_number": 17
    },
    {
      "id": "58a002cb-6721-4902-859c-7956331bcfeb",
      "m1": "بخورد آن زمان خسرو از می سه جام",
      "m2": "می و نان کشکین که دارد بنام",
      "verse_number": 18
    },
    {
      "id": "452329d2-3033-4697-9e6c-46e4e7db288d",
      "m1": "چو مغزش شد از بادهٔ سرخ گرم",
      "m2": "هم آنگه بخفت از بر ریگ نرم",
      "verse_number": 19
    },
    {
      "id": "27eba6c0-d015-43a6-83d6-0f312b90e4c6",
      "m1": "نهاد از بر ران بندوی سر",
      "m2": "روانش پر از درد و خسته جگر",
      "verse_number": 20
    },
    {
      "id": "929c8eb2-b24a-4660-985d-806c20bda7c3",
      "m1": "همان چون بخواب اندر آمد سرش",
      "m2": "سکوبای مهتر بیامد برش",
      "verse_number": 21
    },
    {
      "id": "2bcb00b8-acff-4820-8911-e69d935f69fe",
      "m1": "که از راه گردی برآمد سیاه",
      "m2": "دران گرد تیره فراوان سپاه",
      "verse_number": 22
    },
    {
      "id": "eef71217-afbb-49a6-a6d4-9f6439aca81b",
      "m1": "چنین گفت خسرو که بد روزگار",
      "m2": "که دشمن بدین گونه شد خواستا ر",
      "verse_number": 23
    },
    {
      "id": "690cf50b-e21b-4e1f-864d-7c92150c7c50",
      "m1": "نه مردم به کارست و نه بارگی",
      "m2": "فراز آمد آن روز بیچارگی",
      "verse_number": 24
    },
    {
      "id": "dc2b1114-3b4d-4128-8a80-ba015c38015c",
      "m1": "بدو گفت بندوی بس چاره ساز",
      "m2": "که آمدت دشمن بتنگی فراز",
      "verse_number": 25
    },
    {
      "id": "2e3c56cb-8818-434e-8a6d-ca051ad18028",
      "m1": "بدو گفت خسرو که ای نیک خواه",
      "m2": "مرا اندرین کار بنمای راه",
      "verse_number": 26
    },
    {
      "id": "8e1527cf-ecb4-472c-a79b-4298913b1b48",
      "m1": "بدو گفت بندوی کای شهریار",
      "m2": "تو را چاره سازم بدین روزگار",
      "verse_number": 27
    },
    {
      "id": "ce9df137-73f7-4261-803f-6d8d45f5d099",
      "m1": "ولیکن فدا کرده باشم روان",
      "m2": "به پیش جهانجوی شاه جهان",
      "verse_number": 28
    },
    {
      "id": "5ed4a5e4-3a64-4c5d-a440-e17c99f9ebce",
      "m1": "بدو گفت خسرو که دانای چین",
      "m2": "یکی خوب زد داستانی برین",
      "verse_number": 29
    },
    {
      "id": "48765049-0c3d-4269-9b51-58c16d1b43b1",
      "m1": "که هرکو کند بر درشاه کشت",
      "m2": "بیابد بدان گیتی اندر بهشت",
      "verse_number": 30
    },
    {
      "id": "94167288-4cfb-475d-b744-cd2aa1f2b823",
      "m1": "چو دیوار شهر اندر آمد زپای",
      "m2": "کلاته نباید که ماند بجای",
      "verse_number": 31
    },
    {
      "id": "438dc49c-10e7-45f9-9909-a6e260fedd16",
      "m1": "چو ناچیز خواهد شدن شارستان",
      "m2": "مماناد دیوار بیمارستان",
      "verse_number": 32
    },
    {
      "id": "e34edfd1-bf4f-44ff-9ff2-4becab5c48e5",
      "m1": "توگر چارهجویی دانی اکنون بساز",
      "m2": "هم از پاک یزدان نهای بینیاز",
      "verse_number": 33
    },
    {
      "id": "f38501c3-6afc-4841-bc54-3f9aac8cc3dc",
      "m1": "بدو گفت بندوی کاین تاج زر",
      "m2": "مرا ده همین گوشوار و کمر",
      "verse_number": 34
    },
    {
      "id": "c29455fa-3309-4f90-a14f-5f9de9049f95",
      "m1": "همان لعل زرین چینی قبای",
      "m2": "چو من پوشم این را تو ایدر مپای",
      "verse_number": 35
    },
    {
      "id": "2deba1b1-8db1-48b1-8233-0b1e8b17c4c7",
      "m1": "برو با سپاهت هم اندر شتاب",
      "m2": "چو کشتی که موجش درآرد ز آب",
      "verse_number": 36
    },
    {
      "id": "a75fb7bb-3e3b-48d3-a72a-b5dffc11f37f",
      "m1": "بکرد آن زمان هرچ بندوی گفت",
      "m2": "وزانجایگه گشت با باد جفت",
      "verse_number": 37
    },
    {
      "id": "559e286e-047d-492f-8e28-8d767a32cfad",
      "m1": "چو خسرو برفت از بر چاره جوی",
      "m2": "جهاندیده سوی سقف کرد روی",
      "verse_number": 38
    },
    {
      "id": "5e8e4b62-4e65-42ca-ad52-1901dab7e3a4",
      "m1": "که اکنون شما را بدین بر ز کوه",
      "m2": "بباید شدن ناپدید از گروه",
      "verse_number": 39
    },
    {
      "id": "382c88ec-72c8-4742-b310-6d57a802182c",
      "m1": "خود اندر پرستشگه آمد چو گرد",
      "m2": "بزودی در آهنین سخت کرد",
      "verse_number": 40
    },
    {
      "id": "1c760919-c7a4-439c-86b0-b0da2012aeca",
      "m1": "بپوشید پس جامهٔ زرنگار",
      "m2": "به سر برنهاد افسر شهریار",
      "verse_number": 41
    },
    {
      "id": "7abcce68-81ff-4343-ab1f-4d252f9cd586",
      "m1": "بران بام برشد نه بر آرزوی",
      "m2": "سپه دید گرد اندورن چارسوی",
      "verse_number": 42
    },
    {
      "id": "499db90e-0d2c-4276-b903-8e0c05f13454",
      "m1": "همیبود تا لشکر رزمساز",
      "m2": "رسیدند نزدیک آن دژ فراز",
      "verse_number": 43
    },
    {
      "id": "46553132-8a50-4655-a3c1-3c5f4d990f86",
      "m1": "ابرپای خاست آنگه از بام زود",
      "m2": "تن خویشتن را به لشکر نمود",
      "verse_number": 44
    },
    {
      "id": "1ed219de-b091-44b7-98bb-96f71d06859b",
      "m1": "بدیدندش از دور با تاج زر",
      "m2": "همان طوق و آن گوشوار و کمر",
      "verse_number": 45
    },
    {
      "id": "ad709a7d-1ed0-486e-93fb-f7b2a0e814fa",
      "m1": "همیگفت هر کس که این خسروست",
      "m2": "که با تاج و با جامههای نوست",
      "verse_number": 46
    },
    {
      "id": "861898f6-508a-4979-a5ea-521038880784",
      "m1": "چو بند وی شد بیگمان کان سپاه",
      "m2": "همیبازنشناسد او را ز شاه",
      "verse_number": 47
    },
    {
      "id": "cd90fd79-9304-4c18-9d91-406d254db789",
      "m1": "فرود آمد و جامهٔ خویش تفت",
      "m2": "بپوشید ناکام و بربام رفت",
      "verse_number": 48
    },
    {
      "id": "89a9bbf2-27cc-4928-8f23-41f37f891531",
      "m1": "چنین گفت کای رزمسازان نو",
      "m2": "کرا خوانم اندر شما پیش رو",
      "verse_number": 49
    },
    {
      "id": "01d18a3c-b669-46a1-ab61-8916cbbca738",
      "m1": "که پیغام دارم ز شاه جهان",
      "m2": "بگویم شنیده به پیش مهان",
      "verse_number": 50
    },
    {
      "id": "eaf4f972-f378-4624-89ab-87180bdf6480",
      "m1": "چو پور سیاووش دیدش ببام",
      "m2": "منم پیش رو گفت بهرام نام",
      "verse_number": 51
    },
    {
      "id": "252c3706-9120-4c39-8603-8eb62865d8fe",
      "m1": "بدو گفت گوید جهاندار شاه",
      "m2": "که من سخت پیچانم از رنج راه",
      "verse_number": 52
    },
    {
      "id": "36a166e8-8c26-42a7-84b1-017761b28a5a",
      "m1": "ستوران همه خسته و کوفته",
      "m2": "زراه دراز اندر آشوفته",
      "verse_number": 53
    },
    {
      "id": "63a65a28-c031-44e9-bfb6-7d43a2aebd4f",
      "m1": "بدین خانهٔ سوکواران به رنج",
      "m2": "فرود آمدستیم با یار پنج",
      "verse_number": 54
    },
    {
      "id": "fb4fcf1f-cda7-4167-9f43-a2f561a328e3",
      "m1": "چوپیدا شود چاک روز سپید",
      "m2": "کنم دل زکار جهان ناامید",
      "verse_number": 55
    },
    {
      "id": "4dc12feb-ba62-4715-89ae-4548b31be3a4",
      "m1": "بیاییم با تو به راه دراز",
      "m2": "به نزدیک بهرام گردن فراز",
      "verse_number": 56
    },
    {
      "id": "31a013d1-db5e-4f8e-b665-be5376923288",
      "m1": "برین بر که گفتم نجویم زمان",
      "m2": "مگر یارمندی کند آسمان",
      "verse_number": 57
    },
    {
      "id": "a3d6b4c6-b501-405f-a1e0-1cf552efb251",
      "m1": "نیاکان ماآنک بودند پیش",
      "m2": "نگه داشتندی هم آیین وکیش",
      "verse_number": 58
    },
    {
      "id": "09b50cbc-4adb-4c36-8809-781850ff1c6e",
      "m1": "اگرچه بدی بختشان دیر ساز",
      "m2": "ز کهتر نبرداشتندی نیاز",
      "verse_number": 59
    },
    {
      "id": "87128054-42e4-4316-a143-58385704afce",
      "m1": "کنون آنچ ما را به دل راز بود",
      "m2": "بگفتیم چون بخت ناساز بود",
      "verse_number": 60
    },
    {
      "id": "b8983b1c-1216-4b55-81ac-ca5c7452a53a",
      "m1": "زرخشنده خورشید تا تیره خاک",
      "m2": "نباشد مگر رای یزدان پاک",
      "verse_number": 61
    },
    {
      "id": "ef306171-80e7-4aaf-8c58-a5ae772afb52",
      "m1": "چو سالار بشنید زو داستان",
      "m2": "به گفتار او گشت همداستان",
      "verse_number": 62
    },
    {
      "id": "da616f27-5d8d-4cc7-942e-1a7d30ee46c8",
      "m1": "دگر هرکه بشنید گفتار اوی",
      "m2": "پر از درد شد دل ز کردار اوی",
      "verse_number": 63
    },
    {
      "id": "177d7012-5943-4356-adf5-e4c3d4176cf3",
      "m1": "فرود آمد آن شب بدانجا سپاه",
      "m2": "همیداشتی رای خسرو نگاه",
      "verse_number": 64
    },
    {
      "id": "55a00991-c250-4c3a-b67d-ad746a6cd7bf",
      "m1": "دگر روز بندوی بربام شد",
      "m2": "ز دیوار تا سوی بهرام شد",
      "verse_number": 65
    },
    {
      "id": "bfb33e6d-3c12-4a34-9a28-66ab5b12c8db",
      "m1": "بدو گفت کامروز شاه از نماز",
      "m2": "همانا نیاید به کاری فراز",
      "verse_number": 66
    },
    {
      "id": "bef02007-3655-484a-b00b-796ecf43918f",
      "m1": "چنین هم شب تیره بیدار بود",
      "m2": "پرستندهٔ پاک دادار بود",
      "verse_number": 67
    },
    {
      "id": "ed1929b6-4a24-4410-a9ad-e31e49233d80",
      "m1": "همان نیز خورشید گردد بلند",
      "m2": "زگرما نباید که یابد گزند",
      "verse_number": 68
    },
    {
      "id": "9c8de5cd-162a-4780-a4b8-92fcd449396f",
      "m1": "بیاساید امروز و فردا پگاه",
      "m2": "همیراند اندر میان سپاه",
      "verse_number": 69
    },
    {
      "id": "76778344-9270-4893-8b8b-603e90f106a0",
      "m1": "چنین گفت بهرام با مهتران",
      "m2": "که کاریست این هم سبک هم گران",
      "verse_number": 70
    },
    {
      "id": "7c32796d-7a9b-48fc-b53d-706dfaf4ac6d",
      "m1": "چو بر خسرو این کار گیریم تنگ",
      "m2": "مگر تیز گردد بیاید به جنگ",
      "verse_number": 71
    },
    {
      "id": "ff43ac44-8f52-4837-b36e-ec65a357ead7",
      "m1": "بتنها تن او یکی لشکرست",
      "m2": "جهانگیر و بیدار و کنداورست",
      "verse_number": 72
    },
    {
      "id": "12c4d7fb-ab40-4cba-8a8f-69f7352f9a2e",
      "m1": "وگر کشته آید به دشت نبرد",
      "m2": "برآرد ز ما نیز بهرام گرد",
      "verse_number": 73
    },
    {
      "id": "20392413-90b2-45c2-8e2b-78e98a7ba04a",
      "m1": "هم آن به که امروز باشیم نیز",
      "m2": "وگر خوردنی نیست بسیار چیز",
      "verse_number": 74
    },
    {
      "id": "793416e9-5bec-41f6-a050-ae055c65992c",
      "m1": "مگر کو بدین هم نشان خوش منش",
      "m2": "بیاید به از جنگ وز سرزنش",
      "verse_number": 75
    },
    {
      "id": "a07bc4be-3a91-4221-8b83-8b69ab50a463",
      "m1": "چنان هم همیبود تا شب ز کوه",
      "m2": "برآمد بگرد اندر آمد گروه",
      "verse_number": 76
    },
