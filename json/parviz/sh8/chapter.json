{
  "id": "ee6f5204-adc6-4108-9579-1df5d0cbbbe2",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "2315b4d0-bebe-4e0e-8494-d97a5ca07a36",
      "m1": "وزین روی بنشست بهرام گرد",
      "m2": "بزرگان برفتند با او وخرد",
      "verse_number": 1
    },
    {
      "id": "e8d975d5-af01-464d-b2c4-51fe66d1ae26",
      "m1": "سپهبد بپرسید زان سرکشان",
      "m2": "که آمد زخویشان شما را نشان",
      "verse_number": 2
    },
    {
      "id": "a5783367-b442-4737-8a90-3ee19e386327",
      "m1": "فرستید هرکس که دارید خویش",
      "m2": "که باشند یکدل به گفتار وکیش",
      "verse_number": 3
    },
    {
      "id": "79f7743d-d9a5-40e1-8c47-89838acb18a1",
      "m1": "گریشان بیایند وفرمان کنند",
      "m2": "به پیمان روان را گروگان کنند",
      "verse_number": 4
    },
    {
      "id": "184bf2f1-2a76-4cb0-877b-0218131cb4d0",
      "m1": "سپه ماند از بردع واردبیل",
      "m2": "از ارمنیه نیز بیمرد وخیل",
      "verse_number": 5
    },
    {
      "id": "03332081-3071-45c2-b411-cb4646352cb6",
      "m1": "ازیشان برزم اندرون نیست باک",
      "m2": "چه مردان بردع چه یک مشت خاک",
      "verse_number": 6
    },
    {
      "id": "440e3869-2bf1-48c8-975a-40934b167c53",
      "m1": "شنیدند گردنکشان این سخن",
      "m2": "که بهرام جنگ آور افگند بن",
      "verse_number": 7
    },
    {
      "id": "b23d9ee0-5824-45c0-857f-efb07ae9f51b",
      "m1": "زلشکر گزیدند مردی دبیر",
      "m2": "سخن گوی و داننده ویادگیر",
      "verse_number": 8
    },
    {
      "id": "c9c6f5dd-574b-4bd7-8852-5418efb347b0",
      "m1": "بیامد گوی با دلی پر ز راز",
      "m2": "همیبود پویان شب دیریاز",
      "verse_number": 9
    },
    {
      "id": "0d18f5f8-45e7-4e26-bd0e-42d9d1196920",
      "m1": "بگفت آنچ بشنید زان مهتران",
      "m2": "ازان نامداران وکنداوران",
      "verse_number": 10
    },
    {
      "id": "5fd5babc-9a2f-4803-b6e2-4d7948f8697e",
      "m1": "از ایرانیان پاسخ ایدون شنید",
      "m2": "که تا رزم لشکر نیاید پدید",
      "verse_number": 11
    },
    {
      "id": "5da79124-8d91-4113-b2d5-10ac411cb1a9",
      "m1": "یکی مازخسرو نگردیم باز",
      "m2": "بترسیم کین کارگردد دراز",
      "verse_number": 12
    },
    {
      "id": "a0255b36-9294-4aa0-8335-dcd60d457bb4",
      "m1": "مباشید ایمن بران رزمگاه",
      "m2": "که خسرو شبیخون کند با سپاه",
      "verse_number": 13
    },
    {
      "id": "9d94762f-f6df-4df6-9384-c946a9de1540",
      "m1": "چو پاسخ شنید آن فرستاده مرد",
      "m2": "سوی لشکر پهلوان شد چو گرد",
      "verse_number": 14
    },
    {
      "id": "6b353f76-d5fc-4422-9ceb-4db88dfcda25",
      "m1": "همه لشکرآتش برافروختند",
      "m2": "بهر جای شمعی همیسوختند",
      "verse_number": 15
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 15
  }
}