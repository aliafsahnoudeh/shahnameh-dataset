{
  "id": "7e95e003-4302-4a2d-81d7-149e9b29c64a",
  "title": "بخش ۲۷",
  "verses": [
    {
      "id": "446b31ba-959d-4546-909e-6f93ad9a6e0c",
      "m1": "وزان پس چو دانست کامد سپاه",
      "m2": "جهان شد ز گرد سواران سیاه",
      "verse_number": 1
    },
    {
      "id": "e3d27e51-0a67-43f0-a67e-24835f60cbe4",
      "m1": "گزین کرد زان رومیان صدهزار",
      "m2": "همه نامدار ازدرکارزار",
      "verse_number": 2
    },
    {
      "id": "d8bc585b-245a-4fb7-a818-3cfdd655cb78",
      "m1": "سلیح و درم خواست واسپان جنگ",
      "m2": "سرآمد برو روزگار درنگ",
      "verse_number": 3
    },
    {
      "id": "b7b89fc5-e73f-41b1-9a85-f8b762fa6c8f",
      "m1": "یکی دخترش بود مریم بنام",
      "m2": "خردمند و با سنگ و با رای وکام",
      "verse_number": 4
    },
    {
      "id": "889c6f4f-8f1e-4481-adc5-4f768f39437e",
      "m1": "بخسرو فرستاد به آیین دین",
      "m2": "همیخواست ازکردگار آفرین",
      "verse_number": 5
    },
    {
      "id": "cb750f1d-6b67-46e6-b2ff-f804313993f6",
      "m1": "بپذرفت دخترش گستهم گرد",
      "m2": "به آیین نیکو بخسرو سپرد",
      "verse_number": 6
    },
    {
      "id": "d8000bf5-87ce-493e-98c4-a74d11262410",
      "m1": "وزان پس بیاورد چندان جهیز",
      "m2": "کزان کند شد بارگیهای تیز",
      "verse_number": 7
    },
    {
      "id": "1cd17157-cf4d-409f-8c0c-1f59bceee3f7",
      "m1": "ز زرینه و گوهر شاهوار",
      "m2": "ز یاقوت وز جامهٔ زرنگار",
      "verse_number": 8
    },
    {
      "id": "9bb34eca-2fd2-4bea-8fa2-5084f45d39ae",
      "m1": "ز گستردنیها و دیبای روم",
      "m2": "به زر پیکر و از بریشمش بوم",
      "verse_number": 9
    },
    {
      "id": "2da05fcd-f997-48f9-ae69-e14d1ffa2b25",
      "m1": "همان یاره و طوق با گوشوار",
      "m2": "سه تاج گرانمایه گوهرنگار",
      "verse_number": 10
    },
    {
      "id": "4fa58009-853e-49b8-a4b8-39864f263f4f",
      "m1": "عماری بیاراست زرین چهار",
      "m2": "جلیلش پر ازگوهر شاهوا ر",
      "verse_number": 11
    },
    {
      "id": "7a714cfb-8d02-4370-8f90-77de5db5c6c2",
      "m1": "چهل مهد دیگر بد از آبنوس",
      "m2": "ز گوهر درفشان چو چشم خروس",
      "verse_number": 12
    },
    {
      "id": "e440fb90-6f32-4ad4-966b-2e7294f40c4a",
      "m1": "ازان پس پرستنده ماه روی",
      "m2": "زایوان برفتند با رنگ وبوی",
      "verse_number": 13
    },
    {
      "id": "e19d022e-0ab4-4b84-a1ec-bb625e7fbcc4",
      "m1": "خردمند و بیدار پانصد غلام",
      "m2": "بیامد بزرین وسیمین ستام",
      "verse_number": 14
    },
    {
      "id": "6043c9cf-6aaf-4311-9d39-19a755e48282",
      "m1": "ز رومی همان نیز خادم چهل",
      "m2": "پری چهره و شهره ودلگسل",
      "verse_number": 15
    },
    {
      "id": "b792697b-4a85-44e3-a244-7c2e368bed8f",
      "m1": "وزان فیلسوفان رومی چهار",
      "m2": "خردمند و با دانش ونامدار",
      "verse_number": 16
    },
    {
      "id": "806f087f-5a63-48d1-8147-d261c9163c8a",
      "m1": "بدیشان بگفت آنچ بایست گفت",
      "m2": "همان نیز با مریم اندرنهفت",
      "verse_number": 17
    },
    {
      "id": "2dfa568f-0771-4abc-9877-0c1bec9d49ad",
      "m1": "از آرام وز کام و بایستگی",
      "m2": "همان بخشش و خورد و شایستگی",
      "verse_number": 18
    },
    {
      "id": "3b1d1991-7ff8-4108-975e-57b0a61f82c8",
      "m1": "پس از خواسته کرد رومی شمار",
      "m2": "فزون بد ز سیصد هزاران هزار",
      "verse_number": 19
    },
    {
      "id": "13f398ea-ba0a-41c5-9451-eb2b444f8ca3",
      "m1": "فرستاد هر کس که بد بردرش",
      "m2": "ز گوهر نگار افسری بر سرش",
      "verse_number": 20
    },
    {
      "id": "28dbcc46-192a-4589-9cb3-7eb6a20cbac3",
      "m1": "مهان را همان اسپ و دینار داد",
      "m2": "ز شایسته هر چیز بسیار داد",
      "verse_number": 21
    },
    {
      "id": "91521cd8-d51b-4386-b720-7ee67ad50576",
      "m1": "چنین گفت کای زیردستان شاه",
      "m2": "سزد گر بر آرید گردن بماه",
      "verse_number": 22
    },
    {
      "id": "665bb493-c267-4beb-89da-bb4a84512856",
      "m1": "ز گستهم شایستهتر در جهان",
      "m2": "نخیزد کسی از میان مهان",
      "verse_number": 23
    },
    {
      "id": "b9368a20-d561-49b1-a4cd-bc7322369b85",
      "m1": "چوشاپور مهتر کرانجی بود",
      "m2": "که اندر سخنها میانجی بود",
      "verse_number": 24
    },
    {
      "id": "627a66f4-54f6-4262-9131-0ff9cd134ea5",
      "m1": "یکی راز دارست بالوی نیز",
      "m2": "که نفروشد آزادگان را بچیز",
      "verse_number": 25
    },
    {
      "id": "1708ebb6-4c82-4d1b-87e2-f6ddc6f4fa48",
      "m1": "چوخراد برزین نبیند کسی",
      "m2": "اگر چند ماند بگیتی بسی",
      "verse_number": 26
    },
    {
      "id": "04ba6c0a-0c06-4fbe-89a4-4b996e1415f8",
      "m1": "بران آفریدش خدای جهان",
      "m2": "که تا آشکارا شود زو نهان",
      "verse_number": 27
    },
    {
      "id": "cd9962b4-1c92-48cc-8ea7-8ae9bdb946d3",
      "m1": "چو خورشید تابنده او بیبدیست",
      "m2": "همه کار و کردار او ایزدیست",
      "verse_number": 28
    },
    {
      "id": "131e026c-36c1-4f4d-9e5d-fadbe62c0bb7",
      "m1": "همه یاد کرد این به نامه درون",
      "m2": "برفتند با دانش و رهنمون",
      "verse_number": 29
    },
    {
      "id": "31ee35b8-92e4-4603-8ce1-557df92efd48",
      "m1": "ستاره شمر پیش با رهنمای",
      "m2": "که تارفتنش کی به آید ز جای",
      "verse_number": 30
    },
    {
      "id": "deebdf82-b2ca-4da2-81e1-67f86cb6f29c",
      "m1": "به جنبید قیصر به بهرام روز",
      "m2": "به نیک اختر و فال گیتی فروز",
      "verse_number": 31
    },
    {
      "id": "10235b21-3669-4fa2-89e1-45879d9962f3",
      "m1": "دو منزل همیرفت قیصر به راه",
      "m2": "سدیگر بیامد به پیش سپاه",
      "verse_number": 32
    },
    {
      "id": "7a50b1a7-2c50-4652-9d36-41767fa4c131",
      "m1": "به فرمود تا مریم آمد به پیش",
      "m2": "سخن گفت با او ز اندازه بیش",
      "verse_number": 33
    },
    {
      "id": "3b2eaba6-f4dd-45c1-8484-4f4850ad64bf",
      "m1": "بدو گفت دامن ز ایرانیان",
      "m2": "نگه دار و مگشای بند ازمیان",
      "verse_number": 34
    },
    {
      "id": "b955385b-6514-4ab4-9f60-e563bd7e41a4",
      "m1": "برهنه نباید که خسرو تو را",
      "m2": "ببیند که کاری رسد نو تو را",
      "verse_number": 35
    },
    {
      "id": "557d0d8d-2176-45cd-a243-77bcf99aa028",
      "m1": "بگفت این و بدرود کردش به مهر",
      "m2": "که یار تو بادا برفتن سپهر",
      "verse_number": 36
    },
    {
      "id": "c4c01f17-bb92-4095-b858-9f0cb5ca83d2",
      "m1": "نیاطوس جنگی برادرش بود",
      "m2": "بدان جنگ سالار لشکرش بود",
      "verse_number": 37
    },
    {
      "id": "c14b947f-0f82-4812-b25a-90e4535983eb",
      "m1": "بدو گفت مریم به خون خویش تست",
      "m2": "بران برنهادم که هم کیش تست",
      "verse_number": 38
    },
    {
      "id": "449d70fe-f671-41a9-ba93-b2ad1f7bfa3f",
      "m1": "سپردم تو را دختر وخواسته",
      "m2": "سپاهی برین گونه آراسته",
      "verse_number": 39
    },
    {
      "id": "1eefa28a-96f3-4270-81eb-590daa82d6fb",
      "m1": "نیاطوس یکسر پذیرفت از وی",
      "m2": "بگفتند و گریان بپیچید روی",
      "verse_number": 40
    },
    {
      "id": "6525aa41-bc48-4e82-82f1-9c3ee2c67312",
      "m1": "همیرفت لشکر به راه وریغ",
      "m2": "نیا طوس در پیش با گرز وتیغ",
      "verse_number": 41
    },
    {
      "id": "bb6bc636-ec8f-4df0-bd7b-f932171b0feb",
      "m1": "چو بشنید خسروکه آمد سپاه",
      "m2": "ازان شارستان برد لشکر به راه",
      "verse_number": 42
    },
    {
      "id": "2aa44cbf-e708-47e0-bfd0-713bb357f43f",
      "m1": "چو آمد پدیدار گرد سران",
      "m2": "درفش سواران جوشن وران",
      "verse_number": 43
    },
    {
      "id": "3e8d9ab1-dbdf-4741-93f2-d20e6f30fa6d",
      "m1": "همیرفت لشکر بکردار گرد",
      "m2": "سواران بیدار و مردان مرد",
      "verse_number": 44
    },
    {
      "id": "eb6ea584-20bc-44f8-a0de-59a7e2c9ec55",
      "m1": "دل خسرو از لشکر نامدار",
      "m2": "بخندید چون گل بوقت بهار",
      "verse_number": 45
    },
    {
      "id": "655d3606-36a2-4e7c-9540-9c0a2a65e0ee",
      "m1": "دل روشن راد راتیز کرد",
      "m2": "مران باره را پاشنه خیز کرد",
      "verse_number": 46
    },
    {
      "id": "d07554c4-7622-44ad-9122-07bd5c846c51",
      "m1": "نیاطوس را دید و در برگرفت",
      "m2": "بپرسیدن آزادی اندرگرفت",
      "verse_number": 47
    },
    {
      "id": "bc56501f-8a28-41ed-8719-bd685e8fe07d",
      "m1": "ز قیصر که برداشت زانگونه رنج",
      "m2": "ابا رنج دیگر تهی کرد گنج",
      "verse_number": 48
    },
    {
      "id": "829ce37c-d4e3-48c6-8f79-1bb4ab07b34c",
      "m1": "وزانجای سوی عماری کشید",
      "m2": "بپرده درون روی مریم بدید",
      "verse_number": 49
    },
    {
      "id": "4f9aeaf9-4c17-462e-84fb-af7a24f784a6",
      "m1": "بپرسید و بر دست او بوس داد",
      "m2": "ز دیدار آن خوب رخ گشت شاد",
      "verse_number": 50
    },
    {
      "id": "d031daa5-cd03-4ec9-b6e8-a5a1b393ff21",
      "m1": "بیاورد لشکر به پرده سرای",
      "m2": "نهفته یکی ماه را ساخت جای",
      "verse_number": 51
    },
    {
      "id": "5c951db8-5b08-4bb0-9c61-975d848d0866",
      "m1": "سخن گفت و بنشست بااوسه روز",
      "m2": "چهارم چو بفروخت گیتی فروز",
      "verse_number": 52
    },
    {
      "id": "04bdccfa-bc6d-45be-b8c5-a81eda770649",
      "m1": "گزیده سرایی بیاراستند",
      "m2": "نیاطوس را پیش اوخواستند",
      "verse_number": 53
    },
    {
      "id": "b419dd22-b50e-43b6-a391-fe68330e600e",
      "m1": "ابا سرگس و کوت جنگی بهم",
      "m2": "سران سپه را همه بیش و کم",
      "verse_number": 54
    },
    {
      "id": "9c67a183-7476-4be3-9c22-6c314abecf54",
      "m1": "بدیشان چنین گفت کاکنون سران",
      "m2": "کدامند و مردان جنگاوران",
      "verse_number": 55
    },
    {
      "id": "10814d93-5ad0-479a-bd39-5d4e20cf45b3",
      "m1": "نیاطوس بگزید هفتاد مرد",
      "m2": "که آورد گیرند روز نبرد",
      "verse_number": 56
    },
    {
      "id": "4f56cafe-35f3-47b8-99dd-cbcc91a92513",
      "m1": "که زیر درفشش برفتی هزار",
      "m2": "گزیده سواران خنجر گزار",
      "verse_number": 57
    },
    {
      "id": "e24be1a1-be23-428f-82ad-cb6f53bb7aa8",
      "m1": "چو خسرو بدید آن گزیده سپاه",
      "m2": "سواران گردنکش ورزمخواه",
      "verse_number": 58
    },
    {
      "id": "7ffd4fb0-7c00-4d70-8abe-3d0e5254c038",
      "m1": "همیخواند بر کردگار آفرین",
      "m2": "که چرخ آفرید و زمان و زمین",
      "verse_number": 59
    },
    {
      "id": "b97c3636-f487-4e87-9b37-fcc09f2b9d9b",
      "m1": "همان بر نیاطوس وبر لشکرش",
      "m2": "چه برنامور قیصر وکشورش",
      "verse_number": 60
    },
    {
      "id": "12b650b4-6d4b-4b5f-bd90-bf9c15cda88f",
      "m1": "بدان مهتران گفت اگر کردگار",
      "m2": "مرا یارباشد گه کارزار",
      "verse_number": 61
    },
    {
      "id": "72590a9e-7760-452b-a50b-fbe6a50f7c14",
      "m1": "توانایی خویش پیداکنم",
      "m2": "زمین رابکوکب ثریاکنم",
      "verse_number": 62
    },
    {
      "id": "998b751d-3f74-4531-98d2-d6240169427b",
      "m1": "نباشد جزاندیشهٔ دوستان",
      "m2": "فلک یارومهر ردان بوستان",
      "verse_number": 63
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 63
  }
}