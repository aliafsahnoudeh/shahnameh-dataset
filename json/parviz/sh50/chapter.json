{
  "id": "37f3796f-3e0e-43e2-aeb9-3fd3ea2c4b81",
  "title": "بخش ۵۰",
  "verses": [
    {
      "id": "0547cc34-3e31-4c3d-a59d-96a22313b5e9",
      "m1": "ازآن پس چو خاقان به پردخت دل",
      "m2": "ز خون شد همه کشور چین چوگل",
      "verse_number": 1
    },
    {
      "id": "353d2aa4-1017-417c-af80-c6846e5e2229",
      "m1": "چنین گفت یک روز کز مرد سست",
      "m2": "نیاید مگر کار نا تندرست",
      "verse_number": 2
    },
    {
      "id": "74b6e62e-83c9-4043-ad78-f347d2b86a56",
      "m1": "بدان نامداری که بهرام بود",
      "m2": "مرا زو همه رامش و کام بود",
      "verse_number": 3
    },
    {
      "id": "b8a6b3c9-1aa1-4ef2-bb76-3649c98e160f",
      "m1": "کنون من ز کسهای آن نامدار",
      "m2": "چرا بازماندم چنین سست و خوار",
      "verse_number": 4
    },
    {
      "id": "17a2e0b3-dd30-46cf-a343-a519706b7866",
      "m1": "نکوهش کند هرک این بشنود",
      "m2": "ازین پس به سوگند من نگرود",
      "verse_number": 5
    },
    {
      "id": "3427bfeb-58f6-4e8e-b20d-676b3fa0d855",
      "m1": "نخوردم غم خرد فرزند اوی",
      "m2": "نه اندیشهٔ خویش و پیوند اوی",
      "verse_number": 6
    },
    {
      "id": "ded544e9-05e2-4983-a848-3966e87c09ad",
      "m1": "چو با ما به فرزند پیوسته شد",
      "m2": "به مهر و خرد جان او شسته شد",
      "verse_number": 7
    },
    {
      "id": "291b468f-ee34-4813-8268-d5ab6c1ffb7d",
      "m1": "بفرمود تا شد برادرش پیش",
      "m2": "سخن گفت با او ز اندازه بیش",
      "verse_number": 8
    },
    {
      "id": "409fa997-a767-40cd-92b6-28165be90297",
      "m1": "که کسهای بهرام یل را ببین",
      "m2": "فراوان برایشان بخواند آفرین",
      "verse_number": 9
    },
    {
      "id": "d33a9e3d-f567-44cb-bb69-fe0433f1fe92",
      "m1": "بگو آنک من خود جگر خستهام",
      "m2": "بدین سوک تا زندهام بستهام",
      "verse_number": 10
    },
    {
      "id": "f7d0de9e-b0a6-472c-a3dd-f8e07b39b1c8",
      "m1": "به خون روی کشور بشستم ز کین",
      "m2": "همه شهر نفرین بدو آفرین",
      "verse_number": 11
    },
    {
      "id": "44530a5b-ab99-4edf-8306-7de378a8c219",
      "m1": "بدین درد هر چند کین آورم",
      "m2": "وگر آسمان بر زمین آورم",
      "verse_number": 12
    },
    {
      "id": "c379701b-4d94-42b3-8002-043c26b0900c",
      "m1": "ز فرمان یزدان کسی نگذرد",
      "m2": "چنین داند آنکس که دارد خرد",
      "verse_number": 13
    },
    {
      "id": "992be0a1-4a33-425b-8ac6-311488ef9a42",
      "m1": "که او را زمانه بران گونه بود",
      "m2": "همه تنبل دیو وارونه بود",
      "verse_number": 14
    },
    {
      "id": "ebd5f0fa-696e-493d-8ab4-194c564f1f5a",
      "m1": "بران زینهارم که گفتم سخن",
      "m2": "بران عهد و پیمان نهادیم بن",
      "verse_number": 15
    },
    {
      "id": "14073d62-4d31-473b-bda6-97f7162c65ea",
      "m1": "سوی گردیه نامهای بد جدا",
      "m2": "که ای پاکدامن زن پارسا",
      "verse_number": 16
    },
    {
      "id": "4ad3af47-3a2c-40dd-a959-9c7a35da9dcb",
      "m1": "همه راستی و همه مردمی",
      "m2": "سرشتت فزونی و دور از کمی",
      "verse_number": 17
    },
    {
      "id": "aee37493-45bb-496b-8390-4a862d5ea268",
      "m1": "ز کار تو اندیشه کردم دراز",
      "m2": "نشسته خرد با دل من براز",
      "verse_number": 18
    },
    {
      "id": "bec61938-0c3a-490c-8e22-ff7655768c62",
      "m1": "به از تو ندیدم کسی کدخدای",
      "m2": "بیارای ایوان ما را به رای",
      "verse_number": 19
    },
    {
      "id": "e204cd9f-39a8-4532-8092-f857d4d2cb3b",
      "m1": "بدارم تو را همچوجان و تنم",
      "m2": "بکوشم که پیمان تو نشکنم",
      "verse_number": 20
    },
    {
      "id": "7550000f-c647-4c6f-b978-cb2c45353ea1",
      "m1": "وزان پس بدین شهر فرمان تراست",
      "m2": "گروگان کنم دل بدانچت هواست",
      "verse_number": 21
    },
    {
      "id": "8db395d3-a31c-41a9-be96-57c558a486c1",
      "m1": "کنون هرکه داری همه گرد کن",
      "m2": "به پیش خردمند گوی این سخن",
      "verse_number": 22
    },
    {
      "id": "fbeb1e11-a4c4-49ad-a00a-6042004b00ac",
      "m1": "ازین پس ببین تاچه آیدت رای",
      "m2": "به روشن روانت خرد رهنمای",
      "verse_number": 23
    },
    {
      "id": "258761b1-f7df-4c4f-a358-cce0c7f29b26",
      "m1": "خرد را بران مردمان شاه کن",
      "m2": "مرا زآن سگالیده آگاه کن",
      "verse_number": 24
    },
    {
      "id": "a50aa265-ffe0-4b2f-8153-96d61028f4aa",
      "m1": "همیرفت برسان قمری ز سرو",
      "m2": "بیامد برادرش تازان به مرو",
      "verse_number": 25
    },
    {
      "id": "0988715c-2649-4441-879f-cc64692ab508",
      "m1": "جهانجوی با نامور رام شد",
      "m2": "به نزدیک کسهای بهرام شد",
      "verse_number": 26
    },
    {
      "id": "3b18b5e4-142f-4f22-b4d7-4ab4a67b1b7b",
      "m1": "بگفت آنچ خاقان بدو گفته بود",
      "m2": "که از کین آن کشته آشفته بود",
      "verse_number": 27
    },
    {
      "id": "dfa18a0d-3126-4f34-abdc-8ace6e2e263e",
      "m1": "ازان پس چنین گفت کای بخردان",
      "m2": "پسندیده و کار دیده ردان",
      "verse_number": 28
    },
    {
      "id": "b5082ac9-090d-4212-9a90-6fff6b37c198",
      "m1": "شما را بدین مزد بسیار باد",
      "m2": "ورا داور دادگر یار باد",
      "verse_number": 29
    },
    {
      "id": "67ac1241-2779-41cb-84b7-7b7881aa4ecc",
      "m1": "یکی ناگهان مرگ بود آن نه خرد",
      "m2": "که کس در جهان ز آن گمانی نبرد",
      "verse_number": 30
    },
    {
      "id": "4e167572-2543-4fde-b65f-ad7e7776ece5",
      "m1": "پس آن نامه پنهان به خواهرش داد",
      "m2": "سخنهای خاقان همه کرد یاد",
      "verse_number": 31
    },
    {
      "id": "78f65225-2f8d-46a3-b682-efde91a4f8b2",
      "m1": "ز پیوند وز پند و نیکوسخن",
      "m2": "چه از نو چه از روزگار کهن",
      "verse_number": 32
    },
    {
      "id": "fb417410-a967-4c39-b6d1-5027e5be27d5",
      "m1": "ز پاکی و از پارسایی زن",
      "m2": "که هم غمگسارست و هم رای زن",
      "verse_number": 33
    },
    {
      "id": "4b0bdf0d-3bfd-469f-81da-d26eb8b329d9",
      "m1": "جوان گفت و آن پاکدامن شنید",
      "m2": "ز گفتار او خامشی برگزید",
      "verse_number": 34
    },
    {
      "id": "1a20a4f5-6556-4111-9fa0-97f2273989b1",
      "m1": "وزان پس چو برخواند آن نامه را",
      "m2": "سخنهای خاقان خود کامه را",
      "verse_number": 35
    },
    {
      "id": "d89b6fae-1bca-4953-9368-656751a7599d",
      "m1": "خرد را چو با دانش انباز کرد",
      "m2": "به دل پاسخ نامه را ساز کرد",
      "verse_number": 36
    },
    {
      "id": "dcae675b-adec-430c-870d-1376990a1205",
      "m1": "بدو گفت کاین نامه برخواندم",
      "m2": "خرد رابر خویش بنشاندم",
      "verse_number": 37
    },
    {
      "id": "164216d5-58bc-4128-86bc-bfb9f1f26321",
      "m1": "چنان کرد خاقان که شاهان کنند",
      "m2": "جهاندیده و پیشگاهان کنند",
      "verse_number": 38
    },
    {
      "id": "b2c3fb02-d07e-4775-a942-84cd06c2fbb4",
      "m1": "بدو باد روشن جهان بین من",
      "m2": "که چونین بجوید همی کین من",
      "verse_number": 39
    },
    {
      "id": "0afd8213-94b5-47ed-8480-d734b13b05fe",
      "m1": "دل او ز تیمار خسته مباد",
      "m2": "امید جهان زو گسسته مباد",
      "verse_number": 40
    },
    {
      "id": "4de65ef3-6399-4076-8f64-ea47a24903c1",
      "m1": "مباد ایچ گیتی ز خاقان تهی",
      "m2": "بدو شاد بادا کلاه مهی",
      "verse_number": 41
    },
    {
      "id": "32e9ea10-b7a2-409c-9dfe-9d9e44616b20",
      "m1": "کنون چون نشستیم با یکدگر",
      "m2": "بخوانیم نامه همه سر به سر",
      "verse_number": 42
    },
    {
      "id": "d05b18f4-c6dd-48a4-8517-5d7fe982e3e5",
      "m1": "بدان کو بزرگست و دارد خرد",
      "m2": "یکایک بدین آرزو بنگرد",
      "verse_number": 43
    },
    {
      "id": "5a53330c-d11a-485f-af1f-0ebd42050891",
      "m1": "کنون دوده را سر به سر شیونست",
      "m2": "نه هنگامهٔ این سخن گفتنست",
      "verse_number": 44
    },
    {
      "id": "ff1e68d4-5f75-4f79-8565-571eb1a694c3",
      "m1": "چو سوک چنان مهتر آید به سر",
      "m2": "ز فرمان خاقان نباشد گذر",
      "verse_number": 45
    },
    {
      "id": "4a55e1be-9df8-4644-aaa3-50cd0407cca0",
      "m1": "مرا خود به ایران شدن روی نیست",
      "m2": "زن پاک را به ز تو شوی نیست",
      "verse_number": 46
    },
    {
      "id": "7f8f9b56-1cf3-40a6-9ee0-03b4a8cda43d",
      "m1": "اگر من بدین زودی آیم به راه",
      "m2": "چه گوید مرا آن خردمند شاه",
      "verse_number": 47
    },
    {
      "id": "13498013-69a0-4c10-8b75-dd36e8b8be1f",
      "m1": "خردمند بیشرم خواند مرا",
      "m2": "چو خاقان بی آزرم داند مرا",
      "verse_number": 48
    },
    {
      "id": "76abd778-d960-4720-af5d-da5e86725ae3",
      "m1": "بدین سوک چون بگذرد چار ماه",
      "m2": "سواری فرستم به نزدیک شاه",
      "verse_number": 49
    },
    {
      "id": "cfc8b188-9a26-4b5f-96db-7a788cec9126",
      "m1": "همه بشنوم هرچ باید شنید",
      "m2": "بگویندگان تا چه آید پدید",
      "verse_number": 50
    },
    {
      "id": "cde42a3f-ab0e-4540-b41a-18ca0dd01fa1",
      "m1": "بگویم یکایک به نامه درون",
      "m2": "چو آید به نزدیک او رهنمون",
      "verse_number": 51
    },
    {
      "id": "d6e62fe7-f65d-473e-9dc0-657e643b9010",
      "m1": "تو اکنون از ایدر به شادی خرام",
      "m2": "به خاقان بگو آنچ دادم پیام",
      "verse_number": 52
    },
    {
      "id": "8b512b31-b99c-4575-aea3-d39ac05b9f40",
      "m1": "فراوان فرستاده را هدیه داد",
      "m2": "جهاندیده از مرو برگشت شاد",
      "verse_number": 53
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 53
  }
}