{
  "id": "aae4bbaa-4054-43ff-a064-d6fe56e7889e",
  "title": "بخش ۴۰",
  "verses": [
    {
      "id": "e3945266-c7a8-4cd7-a369-9974d442c73a",
      "m1": "چوشب دامن تیره اندر کشید",
      "m2": "سپیده ز کوه سیه بر دمید",
      "verse_number": 1
    },
    {
      "id": "eb03bb56-2ab3-40a4-ac24-c2da4a22dc2e",
      "m1": "مقاتوره پوشید خفتان جنگ",
      "m2": "بیامد یکی تیغ توری به چنگ",
      "verse_number": 2
    },
    {
      "id": "b357047e-79ef-4f8a-a428-b0904a22039d",
      "m1": "چو بهرام بشنید بالای خواست",
      "m2": "یکی جوشن خسرو آرای خواست",
      "verse_number": 3
    },
    {
      "id": "65ff2bb6-f577-4e1c-919a-e025f3542fcb",
      "m1": "گزیدند جایی که هرگز پلنگ",
      "m2": "بر آن شخ بیآب ننهاد چنگ",
      "verse_number": 4
    },
    {
      "id": "6c50381c-8b57-4924-b214-d3413855b1bd",
      "m1": "چو خاقان شنید این سخن برنشست",
      "m2": "برفتند ترکان خسرو پرست",
      "verse_number": 5
    },
    {
      "id": "6ca3702a-22e9-421f-896d-74a40b9adf92",
      "m1": "بدان کار تا زین دو شیر دمان",
      "m2": "کرا پیشتر خواهد آمد زمان",
      "verse_number": 6
    },
    {
      "id": "a2daeeca-fadf-45bf-831b-854c282e4128",
      "m1": "مقاتوره چون شد به دشت نبرد",
      "m2": "ز هامون به ابر اندر آورد گرد",
      "verse_number": 7
    },
    {
      "id": "46ef84db-2d58-4db5-a138-85094811b111",
      "m1": "به بهرام گردنکش آواز داد",
      "m2": "که اکنون ز مردی چه داری بیاد",
      "verse_number": 8
    },
    {
      "id": "aaefbb65-decf-4652-9708-5b76d1da835f",
      "m1": "تو تازی بدین جنگ بر پیشدست",
      "m2": "و گر شیردل ترک خاقان پرست",
      "verse_number": 9
    },
    {
      "id": "70d0ba12-e305-4dbd-ada5-3d18d27c0fca",
      "m1": "بدو گفت بهرام پیشی تو کن",
      "m2": "کجا پی تو افگندهای این سخن",
      "verse_number": 10
    },
    {
      "id": "8d8462bf-c037-46fb-8b12-b3be4fac6676",
      "m1": "مقاتوره کرد از جهاندار یاد",
      "m2": "دو زاغ کمان را به زه برنهاد",
      "verse_number": 11
    },
    {
      "id": "3f593f10-fe03-417d-9bfa-4db8df212d26",
      "m1": "زه و تیر بگرفت شادان بدست",
      "m2": "چو شد غرق پیکانش بگشاد شست",
      "verse_number": 12
    },
    {
      "id": "6b406734-0e4f-4fc5-80c5-0ac49439af41",
      "m1": "بزد بر کمربند مرد سوار",
      "m2": "نسفت آهن از آهن آبدار",
      "verse_number": 13
    },
    {
      "id": "76afb5f4-3cb0-441b-87d0-685452ca2bc7",
      "m1": "زمانی همیبود بهرام دیر",
      "m2": "که تاشد مقاتوره از رزم سیر",
      "verse_number": 14
    },
    {
      "id": "3cc28bf2-9b2f-4915-8086-3a4ea1dd8621",
      "m1": "مقاتوره پنداشت کو شد تباه",
      "m2": "خروشید و برگشت زان رزمگاه",
      "verse_number": 15
    },
    {
      "id": "11e0a033-0be7-4c7d-9be8-58d7eba07208",
      "m1": "بدو گفت بهرام کای جنگجوی",
      "m2": "نکشتی مرا سوی خرگه مپوی",
      "verse_number": 16
    },
    {
      "id": "b12e44b8-0ae9-4d9c-a0e6-95de26872e33",
      "m1": "تو گفتی سخن باش و پاسخ شنو",
      "m2": "اگر بشنوی زنده مانی برو",
      "verse_number": 17
    },
    {
      "id": "6eeea64e-5eca-4ade-972e-38da504c942c",
      "m1": "گزین کرد جوشن گذاری خدنگ",
      "m2": "که آهن شدی پیش او نرم و سنگ",
      "verse_number": 18
    },
    {
      "id": "df3c093a-03f0-4040-bdbc-53ad61039570",
      "m1": "بزد بر میان سوار دلیر",
      "m2": "سپهبد شد از رزم و دینار سیر",
      "verse_number": 19
    },
    {
      "id": "b00d882d-7eb7-46bd-8524-8dffc198d8da",
      "m1": "مقاتوره چون جنگ را برنشست",
      "m2": "برادر دو پایش بزین بر ببست",
      "verse_number": 20
    },
    {
      "id": "0e9dd1fd-00c7-4fa2-bd36-e700e660dfed",
      "m1": "بروی اندر آمد دو دیده پرآب",
      "m2": "همان زین توری شدش جای خواب",
      "verse_number": 21
    },
    {
      "id": "00c1b22d-bbe8-4eed-b266-c807a246473f",
      "m1": "به خاقان چنین گفت کای کامجوی",
      "m2": "همی گورکن خواهد آن نامجوی",
      "verse_number": 22
    },
    {
      "id": "3e5fec05-8e96-4608-817d-22b6fe1511d0",
      "m1": "بدو گفت خاقان که بهتر ببین",
      "m2": "کجا زنده خفتست بر پشت زین",
      "verse_number": 23
    },
    {
      "id": "bb093a4c-5374-42ce-9165-b8453311f785",
      "m1": "بدو گفت بهرام کای برمنش",
      "m2": "هم اکنون به خاک اندر آید تنش",
      "verse_number": 24
    },
    {
      "id": "e8d8ae22-5f27-4b89-a200-43c5ded3b3c6",
      "m1": "تن دشمن تو چنین خفته باد",
      "m2": "که او خفت بر اسپ توری نژاد",
      "verse_number": 25
    },
    {
      "id": "ca8847ab-7693-413b-b864-58d5557c7353",
      "m1": "سواری فرستاد خاقان دلیر",
      "m2": "به نزدیک آن نامبردار شیر",
      "verse_number": 26
    },
    {
      "id": "afba33c2-d652-4404-9bb8-d3affa3d8b6a",
      "m1": "ورا بسته و کشته دیدند خوار",
      "m2": "بر آسوده از گردش روزگار",
      "verse_number": 27
    },
    {
      "id": "06da52a2-5cab-4a33-bc8f-8a59668f29eb",
      "m1": "بخندید خاقان به دل در نهان",
      "m2": "شگفت آمدش زان سوار جهان",
      "verse_number": 28
    },
    {
      "id": "be6b0c86-cadd-4cac-a9ff-9e01ba90de72",
      "m1": "پر اندیشه بد تا بایوان رسید",
      "m2": "کلاهش ز شادی به کیوان رسید",
      "verse_number": 29
    },
    {
      "id": "c6f123d5-86e4-4279-909c-a01ba9680381",
      "m1": "سلیح و درم خواست و اسپ ورهی",
      "m2": "همان تاج و هم تخت شاهنشهی",
      "verse_number": 30
    },
    {
      "id": "3197a891-63f0-4af9-aeb5-1d939dded220",
      "m1": "ز دینار وز گوهر شاهوار",
      "m2": "ز هرگونهای آلت کار زار",
      "verse_number": 31
    },
    {
      "id": "c10149cd-4968-4ea6-be31-acf50819ed33",
      "m1": "فرستاده از پیش خاقان ببرد",
      "m2": "به گنجور بهرام جنگی سپرد",
      "verse_number": 32
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 32
  }
}