{
  "id": "3c0d3cf1-b8a5-4733-b9b2-7e689b058a2b",
  "title": "بخش ۲۰",
  "verses": [
    {
      "id": "7251bd63-9121-4878-87bd-c53fc431f31a",
      "m1": "دبیر جهاندیده را پیش خواند",
      "m2": "بران پیشگاه بزرگی نشاند",
      "verse_number": 1
    },
    {
      "id": "2c01b4e2-1a9b-469c-b97c-21fd5cb3282d",
      "m1": "بفرمود تا نامه پاسخ نوشت",
      "m2": "بیاراست چون مرغزار بهشت",
      "verse_number": 2
    },
    {
      "id": "b22b2515-202c-465b-8a25-2cf31fc310d2",
      "m1": "ز بس بند و پیوند و نیکو سخن",
      "m2": "ازان روز تا روزگار کهن",
      "verse_number": 3
    },
    {
      "id": "ad90654b-fb9a-4c15-8fc8-afd5e3d5ed5f",
      "m1": "چوگشت از نوشتن نویسنده سیر",
      "m2": "نگه کرد قیصر سواری دلیر",
      "verse_number": 4
    },
    {
      "id": "74d28731-70af-4a9a-9a6d-3dde329c11c9",
      "m1": "سخن گوی و روشن دل و یادگیر",
      "m2": "خردمند و گویا و گرد و دبیر",
      "verse_number": 5
    },
    {
      "id": "300f6e0a-4f17-42eb-ad13-f22916a58eeb",
      "m1": "بدو گفت رو پیش خسرو بگوی",
      "m2": "که ای شاه بینا دل و راه جوی",
      "verse_number": 6
    },
    {
      "id": "52405b1d-827f-4ce3-b806-93270bf34fa3",
      "m1": "مرا هم سلیحست و هم زر به گنج",
      "m2": "نیاورد باید کسی را به رنج",
      "verse_number": 7
    },
    {
      "id": "b21b2550-0390-43b1-9a92-a5d85cb78d08",
      "m1": "وگر نیستیمان ز هر کشوری",
      "m2": "درم خواستیمی ز هر مهتری",
      "verse_number": 8
    },
    {
      "id": "c17812ce-8027-4404-afce-be54708778d8",
      "m1": "بدان تا تواز روم با کام خویش",
      "m2": "به ایران گذشتی به آرام خویش",
      "verse_number": 9
    },
    {
      "id": "3d48c58c-b928-4715-959d-07a4e8721a03",
      "m1": "مباش اندرین بوم تیره روان",
      "m2": "چنین است کردار چرخ روان",
      "verse_number": 10
    },
    {
      "id": "7e0a341c-7f99-4587-8ad7-49d2299f27dd",
      "m1": "که گاهی پناهست و گاهی گزند",
      "m2": "گهی با زیانیم و گه سودمند",
      "verse_number": 11
    },
    {
      "id": "8f87b573-3a83-4ea5-b037-ae70b3bbac89",
      "m1": "کنون تا سلیح و سپاه و درم",
      "m2": "فراز آورم تو نباشی دژم",
      "verse_number": 12
    },
    {
      "id": "8aac7ec9-4e9c-460b-aeea-8c0311e0379b",
      "m1": "بر خسرو آمد فرستاده مرد",
      "m2": "سخنهای قیصر همه یاد کرد",
      "verse_number": 13
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 13
  }
}