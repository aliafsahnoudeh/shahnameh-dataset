{
  "id": "66da163f-6e2a-4e80-a9df-84d8ab4264db",
  "title": "بخش ۶۷",
  "verses": [
    {
      "id": "9c000e96-66f3-4ca3-9621-f00506e1c652",
      "m1": "چو آگاهی آمد ز خسرو به راه",
      "m2": "به نزد بزرگان و نزد سپاه",
      "verse_number": 1
    },
    {
      "id": "98127eb5-da82-49bb-b16a-f6969dc93297",
      "m1": "که شیرین به مشکوی خسرو شدست",
      "m2": "کهن بود کار جهان نوشدست",
      "verse_number": 2
    },
    {
      "id": "670e4668-7894-46e8-8ee9-0692c96576bb",
      "m1": "همه شهر زان کار غمگین شدند",
      "m2": "پر اندیشه و درد و نفرین شدند",
      "verse_number": 3
    },
    {
      "id": "c32cdf33-7821-4585-8a35-255656dc228f",
      "m1": "نرفتند نزدیک خسرو سه روز",
      "m2": "چهارم چو بفروخت گیتی فروز",
      "verse_number": 4
    },
    {
      "id": "b78ee1ce-9a2a-400e-b6e1-e4216aff04b6",
      "m1": "فرستاد خسرو مهان را بخواند",
      "m2": "بگاه گران مایگان برنشاند",
      "verse_number": 5
    },
    {
      "id": "bfa38af6-2f05-4868-918c-7ca98aebd718",
      "m1": "بدیشان چنین گفت کاین روز چند",
      "m2": "ندیدم شما را شدم مستمند",
      "verse_number": 6
    },
    {
      "id": "7d456217-bb29-4c69-84bd-238378318576",
      "m1": "بیازردم از بهر آزارتان",
      "m2": "پراندیشه گشتم ز تیمارتان",
      "verse_number": 7
    },
    {
      "id": "8beef13c-0346-4478-894c-6f982513019d",
      "m1": "همیگفت و پاسخ نداد ایچکس",
      "m2": "ز گفتن زبانها ببستند بس",
      "verse_number": 8
    },
    {
      "id": "675ab743-016e-431a-9b35-eb1fae8cf4e0",
      "m1": "هرآنکس که او داشت آزار و خشم",
      "m2": "یکایک به موبد نمودند چشم",
      "verse_number": 9
    },
    {
      "id": "1542e9cb-d04d-4035-910d-da2401138cf5",
      "m1": "چو موبد چنان دید برپای خاست",
      "m2": "به خسرو چنین گفت کای راد وراست",
      "verse_number": 10
    },
    {
      "id": "9795322d-daa5-4dc0-b32f-657583b18121",
      "m1": "به روز جوانی شدی شهریار",
      "m2": "بسی نیک و بد دیدی از روزگار",
      "verse_number": 11
    },
    {
      "id": "b9cc9d95-d862-4b8a-9e37-978fa3ef085c",
      "m1": "شنیدی بسی نیک و بد در جهان",
      "m2": "ز کار بزرگان و کار مهان",
      "verse_number": 12
    },
    {
      "id": "02bbe181-f899-4dab-9b59-bbdfc6970312",
      "m1": "کنون تخمهٔ مهتر آلوده شد",
      "m2": "بزرگی ازین تخمهٔ پالوده شد",
      "verse_number": 13
    },
    {
      "id": "cab18f23-3d34-4a67-8754-9e21b014c6a8",
      "m1": "پدر پاک و مادر بود بیهنر",
      "m2": "چنان دان که پاکی نیاید ببر",
      "verse_number": 14
    },
    {
      "id": "919404f6-1c2f-4344-a915-3d493b6e6bab",
      "m1": "ز کژی نجوید کسی راستی",
      "m2": "که از راستی برکنی کاستی",
      "verse_number": 15
    },
    {
      "id": "a6527b14-c769-48ca-a76c-5fbd9adea88c",
      "m1": "دل ما غمی شد ز دیو سترگ",
      "m2": "که شد یار با شهریار بزرگ",
      "verse_number": 16
    },
    {
      "id": "3ed8abaa-b28b-44aa-afc5-403566ba418c",
      "m1": "به ایران اگر زن نبودی جزین",
      "m2": "که خسرو بدو خواندی آفرین",
      "verse_number": 17
    },
    {
      "id": "ec472844-e31d-4f3a-9dc9-d7c11d2345f9",
      "m1": "نبودی چو شیرین به مشکوی او",
      "m2": "بهر جای روشن بدی روی او",
      "verse_number": 18
    },
    {
      "id": "f8aa694f-f367-4c9a-b1a3-fea866a1cac0",
      "m1": "نیاکانت آن دانشی راستان",
      "m2": "نکردند یاد از چنین داستان",
      "verse_number": 19
    },
    {
      "id": "0319ef61-de67-4a0c-8e1b-98b4b561bb6f",
      "m1": "چوگشت آن سخنهای موبد دراز",
      "m2": "شهنشاه پاسخ نداد ایچباز",
      "verse_number": 20
    },
    {
      "id": "53c144ae-89a4-4154-b6e1-98fdc9f3b37e",
      "m1": "چنین گفت موبد که فردا پگاه",
      "m2": "بیاییم یکسر بدین بارگاه",
      "verse_number": 21
    },
    {
      "id": "17c5c9f7-db3d-4291-9938-a63c252af11d",
      "m1": "مگر پاسخ شاه یابیم باز",
      "m2": "که امروزمان شد سخنها دراز",
      "verse_number": 22
    },
    {
      "id": "d79928cc-12ee-4d2b-9215-20e51f65c342",
      "m1": "دگر روز شبگیر برخاستند",
      "m2": "همه بندگی را بیاراستند",
      "verse_number": 23
    },
    {
      "id": "03f9fb42-4eb3-45e9-92bc-8842cd0e0649",
      "m1": "یکی گفت موبد ندانست گفت",
      "m2": "دگر گفت کان با خرد بود جفت",
      "verse_number": 24
    },
    {
      "id": "71d6c38d-a7af-4151-968e-a7e8c197b807",
      "m1": "سیوم گفت که امروز پاسخ دهد",
      "m2": "سزد زو که آواز فرخ نهد",
      "verse_number": 25
    },
    {
      "id": "fdf48b80-ffd9-4b17-b006-a44bed5304eb",
      "m1": "همه موبدان برگرفتند راه",
      "m2": "خرامان برفتند نزدیک شاه",
      "verse_number": 26
    },
    {
      "id": "2395f5c8-dbd0-40c9-8025-6787a5607e0d",
      "m1": "بزرگان گزیدند جای نشست",
      "m2": "بیامد یکی مرد تشتی بدست",
      "verse_number": 27
    },
    {
      "id": "e22bce08-1ac1-4243-b5e1-88abf7c7c7b7",
      "m1": "چو خورشید رخشنده پالوده گشت",
      "m2": "یکایک بران مهتران برگذشت",
      "verse_number": 28
    },
    {
      "id": "7b9adc0d-c343-42b2-9c32-fb3391ab2452",
      "m1": "بتشت اندرون ریختش خون گرم",
      "m2": "چو نزدیک شد تشت بنهاد نرم",
      "verse_number": 29
    },
    {
      "id": "e4d85d80-2471-462c-9013-b7051e960cc2",
      "m1": "از آن تشت هرکس بپیچید روی",
      "m2": "همه انجمن گشت پر گفت و گوی",
      "verse_number": 30
    },
    {
      "id": "024fd454-9abb-4c38-8f7f-c40220d5c8b2",
      "m1": "همیکرد هر کس به خسرو نگاه",
      "m2": "همه انجمن خیره از بیم شاه",
      "verse_number": 31
    },
    {
      "id": "fe10f1e4-3f5c-4cec-b9bd-0c01de9230f0",
      "m1": "به ایرانیان گفت کاین خون کیست",
      "m2": "نهاده بتشت اندر از بهر چیست",
      "verse_number": 32
    },
    {
      "id": "8d565eb3-2701-4ff6-be30-d2af13ae53fa",
      "m1": "بدو گفت موبد که خون پلید",
      "m2": "کزو دشمنش گشت هرکش بدید",
      "verse_number": 33
    },
    {
      "id": "368e884c-1249-4152-9273-6199bde57b9d",
      "m1": "چوموبد چنین گفت برداشتش",
      "m2": "همه دست بردست بگذاشتش",
      "verse_number": 34
    },
    {
      "id": "a304a34c-10f1-43c4-9b08-389d57157d84",
      "m1": "ز خون تشت پر مایه کردند پاک",
      "m2": "ببستند روشن به آب و به خاک",
      "verse_number": 35
    },
    {
      "id": "3a021c2a-78a7-40b1-82c4-dc58fe4319f6",
      "m1": "چو روشن شد و پاک تشت پلید",
      "m2": "بکرد آنک او شسته بد پرنبید",
      "verse_number": 36
    },
    {
      "id": "57b6ef82-c61b-4856-aafa-5d0dfcee166d",
      "m1": "بمی بر پراگند مشک وگلاب",
      "m2": "شد آن تشت بیرنگ چون آفتاب",
      "verse_number": 37
    },
    {
      "id": "ea7addb0-59d2-4ea7-889b-f392c2f81a6c",
      "m1": "ز شیرین بران تشت بد رهنمون",
      "m2": "که آغاز چون بود و فرجام چون",
      "verse_number": 38
    },
    {
      "id": "c4ef6e3b-c9d5-463d-b9ff-0fc3082884f2",
      "m1": "به موبد چنین گفت خسرو که تشت",
      "m2": "همانا بد این گر دگرگونه گشت",
      "verse_number": 39
    },
    {
      "id": "7390c47a-464d-4c9f-bb15-f0a6b0808ece",
      "m1": "بدو گفت موبد که نوشه بدی",
      "m2": "پدیدار شد نیکوی از بدی",
      "verse_number": 40
    },
    {
      "id": "a6847311-d9bd-4823-a5ac-e5ee3e3d9d29",
      "m1": "بفرمان ز دوزخ توکردی بهشت",
      "m2": "همان خوب کردی تو کردار زشت",
      "verse_number": 41
    },
    {
      "id": "9131e94f-4684-4365-976b-785d8e3d9003",
      "m1": "چنین گفت خسرو که شیرین بشهر",
      "m2": "چنان بد که آن بیمنش تشت زهر",
      "verse_number": 42
    },
    {
      "id": "3ed737e8-c548-48f8-9a10-2d4f9b822aa3",
      "m1": "کنون تشت می شد به مشکوی ما",
      "m2": "برین گونه پربو شد ازبوی ما",
      "verse_number": 43
    },
    {
      "id": "519ea75c-da0d-45bc-bc28-42d2d11d4c6e",
      "m1": "ز من گشت بدنام شیرین نخست",
      "m2": "ز پرمایگان نامداری نجست",
      "verse_number": 44
    },
    {
      "id": "527257f6-23a2-4f9a-93ff-e668f3e96c93",
      "m1": "همه مهتران خواندند آفرین",
      "m2": "که بیتاج وتختت مبادا زمین",
      "verse_number": 45
    },
    {
      "id": "5f872d7f-1634-4dff-9f82-123c6ee6549e",
      "m1": "بهی آن فزاید که تو به کنی",
      "m2": "مه آن شد بگیتی که تومه کنی",
      "verse_number": 46
    },
    {
      "id": "b0620690-7891-4e3b-92cd-89b8990705ed",
      "m1": "که هم شاه وهم موبد وهم ردی",
      "m2": "مگر بر زمین سایهٔ ایزدی",
      "verse_number": 47
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 47
  }
}