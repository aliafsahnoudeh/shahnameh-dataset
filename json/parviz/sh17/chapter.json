{
  "id": "8e8fbcf1-eacd-43f7-8d3f-fee61be61d00",
  "title": "بخش ۱۷",
  "verses": [
    {
      "id": "39d1d549-23a8-4871-91ec-da7a977ac107",
      "m1": "چو بگذشت لشکر بران تازه بوم",
      "m2": "بتندی همیراند تا مرز روم",
      "verse_number": 1
    },
    {
      "id": "af094ca8-3e22-4c82-b598-3b0ae6ddd520",
      "m1": "چنین تا بیامد بران شارستان",
      "m2": "که قیصر ورا خواندی کارستان",
      "verse_number": 2
    },
    {
      "id": "70e07cc8-edc5-49cf-83ad-b45a1e6d5955",
      "m1": "چواز دور ترسا بدید آن سپاه",
      "m2": "برفتند پویان به آبی راه و راه",
      "verse_number": 3
    },
    {
      "id": "16084565-6cdf-465b-a686-b861d1897913",
      "m1": "بدان باره اندر کشیدند رخت",
      "m2": "در شارستان را ببستند سخت",
      "verse_number": 4
    },
    {
      "id": "caac8cf6-c8e9-4aca-b759-50108be9649c",
      "m1": "فروماند زان شاه گیتی فروز",
      "m2": "به بیرون بماندند لشکر سه روز",
      "verse_number": 5
    },
    {
      "id": "4d8433c5-f392-4598-b856-e2524b24aafb",
      "m1": "فرستاد روز چهارم کسی",
      "m2": "که نزدیک ما نیست لشکر بسی",
      "verse_number": 6
    },
    {
      "id": "c3bbf8f3-337f-4dc5-b86c-2ea778556539",
      "m1": "خورشها فرستید و یاری کنید",
      "m2": "چه برما همی کامگاری کنید",
      "verse_number": 7
    },
    {
      "id": "19483b2b-3ca6-4d1a-b29c-9f859c167766",
      "m1": "به نزدیک ایشان سخن خوار بود",
      "m2": "سپاهش همه سست و ناهار بود",
      "verse_number": 8
    },
    {
      "id": "83e69c3c-82da-4a47-a988-5e316be57287",
      "m1": "هم آنگه برآمد یکی تیره ابر",
      "m2": "بغرید برسان جنگی هژبر",
      "verse_number": 9
    },
    {
      "id": "adf199a0-c266-4aab-879d-5087313f400d",
      "m1": "وز ابر اندران شارستان باد خاست",
      "m2": "بهر بر زنی بانگ و فریاد خاست",
      "verse_number": 10
    },
    {
      "id": "3e4c3a75-1c63-4795-80e1-442d59859fbb",
      "m1": "چونیمی ز تیره شب اندر کشید",
      "m2": "ز باره یکی بهره شد ناپدید",
      "verse_number": 11
    },
    {
      "id": "1e6e9fc7-92fe-498e-a767-9905d58cfd92",
      "m1": "همه شارستان ماند اندر شگفت",
      "m2": "به یزدان سقف پوزش اندر گرفت",
      "verse_number": 12
    },
    {
      "id": "e169c479-19e2-4130-8063-04db62040d4f",
      "m1": "بهر بر زنی بر علف ساختند",
      "m2": "سه پیر سکوبا برون تاختند",
      "verse_number": 13
    },
    {
      "id": "665febba-eb2a-4667-a022-38cca5b696dc",
      "m1": "ز چیزی که بود اندران تازه بوم",
      "m2": "همان جامه هایی که خیزد ز روم",
      "verse_number": 14
    },
    {
      "id": "3cf15822-8f00-44f1-b6d4-d9ba57cde924",
      "m1": "ببردند بالا به نزدیک شاه",
      "m2": "که پیدا شد ای شاه برما گناه",
      "verse_number": 15
    },
    {
      "id": "37b9e1f6-11b1-4cc2-a6cf-63992ee359a8",
      "m1": "چو خسرو جوان بود و برتر منش",
      "m2": "بدیشان نکرد از بدی سرزنش",
      "verse_number": 16
    },
    {
      "id": "4934d086-7f70-47f0-a6ea-f0857d9f918d",
      "m1": "بدان شارستان دریکی کاخ بود",
      "m2": "که بالاش با ابر گستاخ بود",
      "verse_number": 17
    },
    {
      "id": "5bbea352-3e26-4694-9a0e-7f4cb5d4aa53",
      "m1": "فراوان بدو اندرون برده بود",
      "m2": "همان جای قیصر برآورده بود",
      "verse_number": 18
    },
    {
      "id": "dcfc5a6d-49c0-4026-8c75-fbfc2895a5c9",
      "m1": "ز دشت اندرآمد بدانجا گذشت",
      "m2": "فراوان بدان شارستان دربگشت",
      "verse_number": 19
    },
    {
      "id": "f44529f4-1617-48d3-bd6a-a74eaeb5747a",
      "m1": "همه رومیان آفرین خواندند",
      "m2": "بپا اندرش گوهر افشاندند",
      "verse_number": 20
    },
    {
      "id": "85583a5a-8cc4-471c-9fbe-f547e8076f96",
      "m1": "چو آباد جایی به چنگ آمدش",
      "m2": "برآسود و چندی درنگ آمدش",
      "verse_number": 21
    },
    {
      "id": "2de7cea9-a12f-4eb0-b3c0-7b5b78d74b92",
      "m1": "به قیصر یکی نامه بنوشت شاه",
      "m2": "ازان باد وباران وابر سیاه",
      "verse_number": 22
    },
    {
      "id": "e5091455-a469-486d-934f-d14692517cb5",
      "m1": "وزان شارستان سوی مانوی راند",
      "m2": "که آن را جهاندار مانوی خواند",
      "verse_number": 23
    },
    {
      "id": "c3efe243-c9f3-4a77-9923-1d76f68bf290",
      "m1": "زما نوییان هرک بیدار بود",
      "m2": "خردمند و راد و جهاندار بود",
      "verse_number": 24
    },
    {
      "id": "8f299a7f-411f-4acf-9c6f-04eac8b6f54e",
      "m1": "سکوبا و رهبان سوی شهریار",
      "m2": "برفتند با هدیه و با نثار",
      "verse_number": 25
    },
    {
      "id": "60480df4-1744-46e1-bd2f-6772d8311331",
      "m1": "همیرفت با شاه چندی سخن",
      "m2": "ز باران و آن شارستان کهن",
      "verse_number": 26
    },
    {
      "id": "b80ecc56-4d90-4dfb-b6d4-e8128cb87879",
      "m1": "همیگفت هرکس که ما بندهایم",
      "m2": "به گفتار خسرو سر افگندهایم",
      "verse_number": 27
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 27
  }
}