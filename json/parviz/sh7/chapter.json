{
  "id": "91c0b29a-70a2-4e62-9544-0ac086dc6117",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "9154090d-7e5f-4de2-aaad-f744aee8eaa7",
      "m1": "وزان روی شد شهریار جوان",
      "m2": "چوبگذشت شاد از پل نهروان",
      "verse_number": 1
    },
    {
      "id": "a73a3725-7dbe-40ed-874b-a7f2bee249e5",
      "m1": "همه مهتران را زلشکر بخواند",
      "m2": "سزاوار بر تخت شاهی نشاند",
      "verse_number": 2
    },
    {
      "id": "96be8bed-879d-4215-99a5-7b1febf3bc14",
      "m1": "چنین گفت کای نیکدل سروران",
      "m2": "جهاندیده و کار کرده سران",
      "verse_number": 3
    },
    {
      "id": "6762d243-f911-4885-ba49-705e49e30b47",
      "m1": "بشاهی مرا این نخستین سرست",
      "m2": "جز از آزمایش نه اندرخورست",
      "verse_number": 4
    },
    {
      "id": "b7973109-71e0-45fd-850c-88660839ab1a",
      "m1": "بجای کسی نیست ما را سپاس",
      "m2": "وگر چند هستیم نیکی شناس",
      "verse_number": 5
    },
    {
      "id": "f47d464e-fe08-455b-b869-23cb3562aa84",
      "m1": "شمارا زما هیچ نیکی نبود",
      "m2": "که چندین غم ورنج باید فزود",
      "verse_number": 6
    },
    {
      "id": "2b80dd50-8e87-43e3-b49d-615fa9f6f860",
      "m1": "نیاکان ما را پرستیدهاید",
      "m2": "بسی شور و تلخ جهان دیدهاید",
      "verse_number": 7
    },
    {
      "id": "46d009a2-f7fe-401a-a44d-00ce9db3a41d",
      "m1": "بخواهم گشادن یکی راز خویش",
      "m2": "نهان دارم از لشکر آواز خویش",
      "verse_number": 8
    },
    {
      "id": "e1ed32b6-7011-438c-bd35-451123121d26",
      "m1": "سخن گفتن من بایرانیان",
      "m2": "نباید که بیرون برند ازمیان",
      "verse_number": 9
    },
    {
      "id": "2a716014-6d49-48f7-9d47-69273deb7803",
      "m1": "کزین گفتن اندیشه من تباه",
      "m2": "شود چون بگویند پیش سپاه",
      "verse_number": 10
    },
    {
      "id": "cc16c388-270c-40ad-b6f7-d22f170625a1",
      "m1": "من امشب سگالیدهام تاختن",
      "m2": "سپه را به جنگ اندر انداختند",
      "verse_number": 11
    },
    {
      "id": "df06d35c-c52e-4fca-b621-700be2125718",
      "m1": "که بهرام را دیدهام در سخن",
      "m2": "سواریست اسپ افگن وکارکن",
      "verse_number": 12
    },
    {
      "id": "fe9ea09c-611d-453a-88cf-3a592c941145",
      "m1": "همی کودکی بیخرد داندم",
      "m2": "بگرز و بشمشیر ترساندم",
      "verse_number": 13
    },
    {
      "id": "bbc5e8cd-7b67-4774-877c-2af3d1f5b349",
      "m1": "نداند که من شب شبیخون کنم",
      "m2": "برزم اندرون بیم بیرون کنم",
      "verse_number": 14
    },
    {
      "id": "f33aa16e-f782-4a5e-ae38-aba959a18ce7",
      "m1": "اگریار باشید بامن به جنگ",
      "m2": "چو شب تیره گردد نسازم درنگ",
      "verse_number": 15
    },
    {
      "id": "cc97bed7-a07e-498d-a1bb-72ba9da2833d",
      "m1": "چو شوید بعنبر شب تیره روی",
      "m2": "بیفشاند این گیسوی مشکبوی",
      "verse_number": 16
    },
    {
      "id": "61521899-95bb-4244-a78f-8c534b1bda2a",
      "m1": "شما برنشینید با ساز جنگ",
      "m2": "همه گرز و خنجر گرفته بچنگ",
      "verse_number": 17
    },
    {
      "id": "64dd4317-647e-4bb6-a5df-02990bf8dfe2",
      "m1": "بران برنهادند یکسر سپاه",
      "m2": "که یک تن نگردد زفرمان شاه",
      "verse_number": 18
    },
    {
      "id": "b268d3a4-9271-436c-9dba-d4e870fa4103",
      "m1": "چو خسرو بیامد بپرده سرای",
      "m2": "زبیگانه مردم بپردخت جای",
      "verse_number": 19
    },
    {
      "id": "6a99e03d-8ba6-4ca1-b3cb-81aa9d4604ed",
      "m1": "بیاورد گستهم وبندوی را",
      "m2": "جهاندیده و گرد گردوی را",
      "verse_number": 20
    },
    {
      "id": "f795a583-c43a-42e5-87f6-6351a8ab3b63",
      "m1": "همه کارزار شبیخون بگفت",
      "m2": "که با او مگر یار باشند و جفت",
      "verse_number": 21
    },
    {
      "id": "559caa1a-da74-41f6-b448-f4916a34231d",
      "m1": "بدو گفت گستهم کای شهریار",
      "m2": "چرایی چنین ایمن از روزگار",
      "verse_number": 22
    },
    {
      "id": "b5dba1e7-c2a8-4d4e-bd4f-3e8e98f74a88",
      "m1": "تو با لشکر اکنون شبیخون کنی",
      "m2": "ز دلها مگر مهر بیرون کنی",
      "verse_number": 23
    },
    {
      "id": "90438645-e9c1-4027-9cc4-754dd48ff3c4",
      "m1": "سپاه تو با لشکر دشمنند",
      "m2": "ابا او همه یک دل ویک تنند",
      "verse_number": 24
    },
    {
      "id": "73930fb9-4620-455c-9bcc-17e46fe58cc1",
      "m1": "ز یک سو نبیره ز یک سو نیا",
      "m2": "به مغز اندرون کی بود کیمیا",
      "verse_number": 25
    },
    {
      "id": "815506b3-1f3a-4bbd-b713-619afce4d7c8",
      "m1": "ازین سو برادر وزان سو پدر",
      "m2": "همه پاک بسته یک اندر دگر",
      "verse_number": 26
    },
    {
      "id": "e8911d36-422c-419c-bce1-c4a6e7f112a4",
      "m1": "پدر چون کند با پسر کارزار",
      "m2": "بدین آروز کام دشمن مخار",
      "verse_number": 27
    },
    {
      "id": "0c8abb57-306e-4cc4-bc4b-4bbe8c8742e6",
      "m1": "نبایست گفت این سخن با سپاه",
      "m2": "چو گفتی کنون کار گردد تباه",
      "verse_number": 28
    },
    {
      "id": "934ee30f-f94e-4da7-b496-27a1fbec0f0a",
      "m1": "بدو گفت گردوی کاین خود گذشت",
      "m2": "گذشته همه باد گردد به دشت",
      "verse_number": 29
    },
    {
      "id": "4ea4da3f-7853-41bf-afd4-cec16d48ef15",
      "m1": "توانایی و کام وگنج وسپاه",
      "m2": "سر مرد بینا نپیچد ز راه",
      "verse_number": 30
    },
    {
      "id": "2e34ac52-97b3-4f0a-8f59-804098688ee6",
      "m1": "بدین رزمگه امشب اندر مباش",
      "m2": "ممان تا شود گنج و لشکر به لاش",
      "verse_number": 31
    },
    {
      "id": "b701bb7c-c725-4b41-89a7-6b274b9b834e",
      "m1": "که من بیگمانم کزین راز ما",
      "m2": "وزین ساختن در نهان سازما",
      "verse_number": 32
    },
    {
      "id": "765762a1-a274-4c4a-a7b2-52d700b74660",
      "m1": "بدان لشکر اکنون رسید آگهی",
      "m2": "نباید که تو سر بدشمن دهی",
      "verse_number": 33
    },
    {
      "id": "a7e67eee-cdb4-4dcf-a682-259e3128c05e",
      "m1": "چوبشنید خسرو پسند آمدش",
      "m2": "به دل رای او سودمند آمدش",
      "verse_number": 34
    },
    {
      "id": "61938b99-585b-41e2-bc48-7bee492cd1d6",
      "m1": "گزین کرد زان سرکشان مرد چند",
      "m2": "که باشند برنیک وبد یارمند",
      "verse_number": 35
    },
    {
      "id": "a6d2a030-27d9-4533-bce2-526f765b6fb6",
      "m1": "چو خرداد برزین و گستهم شیر",
      "m2": "چوشاپور و چون اندیان دلیر",
      "verse_number": 36
    },
    {
      "id": "80345259-262d-4ee2-932f-fab45733ccee",
      "m1": "چو بندوی خراد لشکر فروز",
      "m2": "چو نستود لشکرکش نیوسوز",
      "verse_number": 37
    },
    {
      "id": "e7b41c66-9678-46ee-ab6d-bff868df9fc9",
      "m1": "تلی بود پر سبزه وجای سور",
      "m2": "سپه را همیدید خسرو ز دور",
      "verse_number": 38
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 38
  }
}