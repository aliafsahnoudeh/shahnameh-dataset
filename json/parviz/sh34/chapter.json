{
  "id": "844d992d-0745-4752-8552-d5c815e456cd",
  "title": "بخش ۳۴",
  "verses": [
    {
      "id": "42ce12d4-79ef-42bc-b528-515dc9f96b41",
      "m1": "چو خورشید روشن بیاراست گاه",
      "m2": "طلایه بیامد ز نزدیک شاه",
      "verse_number": 1
    },
    {
      "id": "f0031981-86ff-4115-bbca-e58ce7cf16fa",
      "m1": "به پرده سرای اندرون کس ندید",
      "m2": "همان خیمه بر پای بر بس ندید",
      "verse_number": 2
    },
    {
      "id": "16b17651-1a73-4da3-ac9c-68037a9181ad",
      "m1": "طلایه بیامد بگفت این به شاه",
      "m2": "دل شاه شد تنگ زان رزمخواه",
      "verse_number": 3
    },
    {
      "id": "74b0740c-27c1-4b0c-9e26-4ff408268f54",
      "m1": "گزین کرد زان جنگیان سه هزار",
      "m2": "زره دار و برگستوان ور سوار",
      "verse_number": 4
    },
    {
      "id": "8b82b00b-e1a3-4051-8780-160a5a839f45",
      "m1": "به نستود فرمود تا برنشست",
      "m2": "میان یلی تاختن را ببست",
      "verse_number": 5
    },
    {
      "id": "9dbe217b-ac9a-4be8-8bbc-f176c9574766",
      "m1": "همیراند نستود دل پر ز درد",
      "m2": "نبد مرد بهرام روز نبرد",
      "verse_number": 6
    },
    {
      "id": "4dac82a9-cfef-4a9a-821c-0a0b36002706",
      "m1": "همان نیز بهرام با لشکرش",
      "m2": "نبود ایمن از راه وز کشورش",
      "verse_number": 7
    },
    {
      "id": "0d0422e0-8169-4c5f-b4e4-580bda9986cc",
      "m1": "همیراند بیراه دل پر ز بیم",
      "m2": "همیبرد با خویشتن زر و سیم",
      "verse_number": 8
    },
    {
      "id": "7a462788-f81c-4c49-ae0d-3ffc3ae10e22",
      "m1": "یلان سینه و گرد ایزد گشسپ",
      "m2": "ز یک سوی لشکر همیراند اسپ",
      "verse_number": 9
    },
    {
      "id": "ccd4ae1c-37e6-4156-8339-74d0d0fd3c60",
      "m1": "به بیراه لشکر همیراندند",
      "m2": "سخنهای شاهان همیخواندند",
      "verse_number": 10
    },
    {
      "id": "178a14c4-7a58-459d-b1df-6a0b05b0b335",
      "m1": "پدید آمد از دور یک پاره ده",
      "m2": "کجا ده نبود از در مرد مه",
      "verse_number": 11
    },
    {
      "id": "c75b3b04-964a-4d00-a3f0-a19d43fc6b9c",
      "m1": "همیراند بهرام پیش اندرون",
      "m2": "پشیمان شده دل پر از درد و خون",
      "verse_number": 12
    },
    {
      "id": "baa05fa1-8684-433f-9fc9-f8024084b292",
      "m1": "چو از تشنگی خشک شدشان دهن",
      "m2": "بیامد به خان یکی پیرزن",
      "verse_number": 13
    },
    {
      "id": "a1d9af75-c2c4-40b8-a507-f8e0d33f74d1",
      "m1": "زبان را به چربی بیاراستند",
      "m2": "وزان پیرزن آب و نان خواستند",
      "verse_number": 14
    },
    {
      "id": "6f5cd77b-2c1c-4ffa-91fa-a76d93a0952d",
      "m1": "زن پیر گفتار ایشان شنید",
      "m2": "یکی کهنه غربیل پیش آورید",
      "verse_number": 15
    },
    {
      "id": "e5f09456-c561-4d57-a5e8-41f863c24718",
      "m1": "برو بر به گسترده یک پاره مشک",
      "m2": "نهاده به غربیل بر نان کشک",
      "verse_number": 16
    },
    {
      "id": "7c0693c1-6d90-42ee-be7d-1a6ac351827d",
      "m1": "یلان سینه برسم به بهرام داد",
      "m2": "نیامد همی در غم از واژ یاد",
      "verse_number": 17
    },
    {
      "id": "5143481a-eaa7-4871-8867-bb8ba419bec8",
      "m1": "گرفتند واژ و بخوردند نان",
      "m2": "نظاره بدان نامداران زنان",
      "verse_number": 18
    },
    {
      "id": "82415e94-1b0e-451a-8342-5275d8286153",
      "m1": "چو کشکین بخوردند می خواستند",
      "m2": "زبانها به زمزم بیاراستند",
      "verse_number": 19
    },
    {
      "id": "a3bff8a6-b30d-4482-81b0-96e1c03afb27",
      "m1": "زن پیر گفت ار میت آرزوست",
      "m2": "میست و یکی نیز کهنه کدوست",
      "verse_number": 20
    },
    {
      "id": "7517fb60-c3c1-49ed-9754-0e91a9705daa",
      "m1": "بریدم کدو را که نوبد سرش",
      "m2": "یکی جام کردم نهادم برش",
      "verse_number": 21
    },
    {
      "id": "fef95514-6ab9-4896-9644-8e7f5ddf7b19",
      "m1": "بدو گفت بهرام چون می بود",
      "m2": "ازان خوبتر جامها کی بود",
      "verse_number": 22
    },
    {
      "id": "2bb1d54f-5994-489c-8751-e524cfeebfa0",
      "m1": "زن پیر رفت و بیاورد جام",
      "m2": "ازان جام بهرام شد شادکام",
      "verse_number": 23
    },
    {
      "id": "afa5dfe7-686b-441d-bb8b-231ae161e589",
      "m1": "یکی جام پر بر کفش برنهاد",
      "m2": "بدان تا شود پیرزن نیز شاد",
      "verse_number": 24
    },
    {
      "id": "292e1996-41a6-4385-bdbd-f332a7553e46",
      "m1": "بدو گفت کای مام با فرهی",
      "m2": "ز کار جهان چیستت آگهی",
      "verse_number": 25
    },
    {
      "id": "66baee1e-a886-4ca4-9e24-1fe961c5d8b5",
      "m1": "بدو پیرزن گفت چندان سخن",
      "m2": "شنیدم کزان گشت مغزم کهن",
      "verse_number": 26
    },
    {
      "id": "b73bef8a-e8a8-47aa-9bfa-0084abba2acf",
      "m1": "ز شهر آمد امروز بسیار کس",
      "m2": "همی جنگ چوبینه گویند و بس",
      "verse_number": 27
    },
    {
      "id": "fcac307d-d093-4723-bd45-d165337b6953",
      "m1": "که شد لشکر او به نزدیک شاه",
      "m2": "سپهبد گریزان بشد بیسپاه",
      "verse_number": 28
    },
    {
      "id": "dd3c2853-a9da-4173-9941-d4ad626d8884",
      "m1": "بدو گفت بهرام کای پاک زن",
      "m2": "مرا اندرین داستانی بزن",
      "verse_number": 29
    },
    {
      "id": "a5569248-cc48-4309-a3b8-72f178e821da",
      "m1": "که این از خرد بود بهرام را",
      "m2": "وگر برگزید از هوا کام را",
      "verse_number": 30
    },
    {
      "id": "7ca46e4b-a5b9-4038-9e6b-3aacd20d6b1e",
      "m1": "بدو پیرزن گفت کای شهره مرد",
      "m2": "چرا دیو چشم تو را تیره کرد",
      "verse_number": 31
    },
    {
      "id": "36ae260b-f8a9-418e-b65b-8723b4d1c2bd",
      "m1": "ندانی که بهرام پور گشسپ",
      "m2": "چوبا پور هرمز بر انگیزد اسپ",
      "verse_number": 32
    },
    {
      "id": "38d638d1-e2ad-4651-81e3-4348642d4b81",
      "m1": "بخندد برو هرک دارد خرد",
      "m2": "کس اورا ز گردنکشان نشمرد",
      "verse_number": 33
    },
    {
      "id": "91435d4b-e4eb-463c-bf45-0739c352c02e",
      "m1": "بدو گفت بهرام گر آرزوی",
      "m2": "چنین کرد گو میخوران در کدوی",
      "verse_number": 34
    },
    {
      "id": "65e286f0-706a-40b4-ae94-5ddde57916c5",
      "m1": "برین گونه غربیل بر نان جو",
      "m2": "همیدار در پیش تا جو درو",
      "verse_number": 35
    },
    {
      "id": "3dfd91be-c550-4918-b079-52cb057ed55e",
      "m1": "بران هم خورش یک شب آرام یافت",
      "m2": "همی کام دل جست و ناکام یافت",
      "verse_number": 36
    },
    {
      "id": "8396e34a-ea37-418e-b2bb-c3623f3134a3",
      "m1": "چو خورشید برچرخ بگشاد راز",
      "m2": "سپهدار جنگی بزد طبل باز",
      "verse_number": 37
    },
    {
      "id": "a363e383-d9f2-4ed8-9c95-43eb873bdd00",
      "m1": "بیاورد چندانک بودش سپاه",
      "m2": "گرانمایگان برگرفتند راه",
      "verse_number": 38
    },
    {
      "id": "b2c968b6-2f16-4fa6-9536-db95ce70c7d5",
      "m1": "بره بر یکی نیستان بود نو",
      "m2": "بسی اندرو مردم نیدرو",
      "verse_number": 39
    },
    {
      "id": "83133353-b189-4978-956a-5f21d6b2f806",
      "m1": "چو از دور دیدند بهرام را",
      "m2": "چنان لشکرگشن و خودکام را",
      "verse_number": 40
    },
    {
      "id": "e3b5270a-df10-45bf-913a-409c5bacaa1a",
      "m1": "به بهرام گفتند انوشه بدی",
      "m2": "ز راه نیستان چرا آمدی",
      "verse_number": 41
    },
    {
      "id": "75294a36-18ab-4365-b1e3-fd13230c90b4",
      "m1": "که بیمر سپاهست پیش اندرون",
      "m2": "همه جنگ را دست شسته به خون",
      "verse_number": 42
    },
    {
      "id": "ffdc58b2-3d0c-4682-90c4-0e6cd551fe2e",
      "m1": "چنین گفت بهرام کایدر سوار",
      "m2": "نباشد جز از لشکر شهریار",
      "verse_number": 43
    },
    {
      "id": "0493cc13-0d56-41f0-8fb2-b64ce77ffd57",
      "m1": "فرود آمدند اندران نیستان",
      "m2": "همه جنگ را تنگ بسته میان",
      "verse_number": 44
    },
    {
      "id": "d872110e-3796-4a20-8cb9-3e751d7555e9",
      "m1": "شنیدم که چون ما ز پرده سرای",
      "m2": "بسی چیدن راه کردیم رای",
      "verse_number": 45
    },
    {
      "id": "3fdd6d89-96e6-4d9c-8f67-355f5c5c8391",
      "m1": "جهاندار بگزید نستود را",
      "m2": "جهان جوی بیتار و بیپود را",
      "verse_number": 46
    },
    {
      "id": "7e8c5653-7e42-4468-9488-aa0004ab156c",
      "m1": "ابا سه هزار از سواران مرد",
      "m2": "کجا پای دارند روز نبرد",
      "verse_number": 47
    },
    {
      "id": "5c78d580-0aa1-4cc5-bd5a-30580c6303af",
      "m1": "بدان تا بیاید پس ما دمان",
      "m2": "چو بینم مر او را سرآرم زمان",
      "verse_number": 48
    },
    {
      "id": "2ad0f1ab-5992-42a6-9037-0208eb7ec182",
      "m1": "همه اسپ را تنگها برکشید",
      "m2": "همه گرد این بیشه لشکر کشید",
      "verse_number": 49
    },
    {
      "id": "389c9b1b-f0e8-44f7-9ce6-275f2d74e1fd",
      "m1": "سواران سبک برکشیدند تنگ",
      "m2": "گرفتند شمشیر هندی به چنگ",
      "verse_number": 50
    },
    {
      "id": "f474f066-7a72-4ed0-959d-46b5b980c22d",
      "m1": "همه نیستان آتش اندر زدند",
      "m2": "سپه را یکایک بهم بر زدند",
      "verse_number": 51
    },
    {
      "id": "7018f16f-2dc2-46e6-8957-b3a8e8f6a2cb",
      "m1": "نیستان سراسر شد افروخته",
      "m2": "یکی کشته و دیگری سوخته",
      "verse_number": 52
    },
    {
      "id": "2c75f9b7-850e-435a-8494-0eeece745fea",
      "m1": "چونستود را دید بهرام گرد",
      "m2": "عنان بارهٔ تیزتگ را سپرد",
      "verse_number": 53
    },
    {
      "id": "9c437b6b-7459-431b-876a-742806b2493e",
      "m1": "ز زین برگرفتش به خم کمند",
      "m2": "بیاورد و کردش هم آنگه ببند",
      "verse_number": 54
    },
    {
      "id": "a8a406fb-e5b7-453a-a7f2-859eddb1a3e5",
      "m1": "همیخواست نستود زو زینهار",
      "m2": "همیگفت کای نامور شهریار",
      "verse_number": 55
    },
    {
      "id": "4145c57d-6e2c-46c5-bb1e-f4e52b800783",
      "m1": "چرا ریخت خواهی همی خون من",
      "m2": "ببخشای بر بخت وارون من",
      "verse_number": 56
    },
    {
      "id": "d56542af-6a6f-4f31-a80f-3f03d17718c8",
      "m1": "مکش مر مرا تا دوان پیش تو",
      "m2": "بیایم بوم زار درویش تو",
      "verse_number": 57
    },
    {
      "id": "de7e1457-b2ad-4e29-84c9-a2e5cc919ced",
      "m1": "بدو گفت بهرام من چون تو مرد",
      "m2": "نخواهم که باشد به دشت نبرد",
      "verse_number": 58
    },
    {
      "id": "c8bdefbc-4023-414d-b67f-e1718b83d854",
      "m1": "نبرم سرت را که ننگ آیدم",
      "m2": "که چون تو سواری به جنگ آیدم",
      "verse_number": 59
    },
    {
      "id": "be4d2bc7-5dfb-4048-9a9e-69002bae0466",
      "m1": "چو یابی رهایی ز دستم بپوی",
      "m2": "ز من هرچ دیدی به خسرو بگوی",
      "verse_number": 60
    },
    {
      "id": "86649390-44c8-4ff8-b086-e32c1f8f84d5",
      "m1": "چو بشنید نستود روی زمین",
      "m2": "ببوسید و بسیار کرد آفرین",
      "verse_number": 61
    },
    {
      "id": "8e346b47-bd46-4a2f-8e7a-109fb058c72c",
      "m1": "وزان بیشه بهرام شد تابری",
      "m2": "ابا او دلیران فرخنده پی",
      "verse_number": 62
    },
    {
      "id": "997b7c27-fae6-4c0c-b59c-4a7c61f8fadd",
      "m1": "ببود و برآسود و ز آنجا برفت",
      "m2": "به نزدیک خاقان خرامید تفت",
      "verse_number": 63
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 63
  },
  "order_in_parent": 34
}