{
  "id": "323d3d4e-ca18-44ed-a824-b7e380b10255",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "82586854-9a6e-4a11-87a2-b4f7264ac6e9",
      "m1": "چو ماه از بر تخت سیمین نشست",
      "m2": "سه پاس از شب تیره اندر گذشت",
      "verse_number": 1
    },
    {
      "id": "2c523835-241a-400c-9237-cbb614c2f516",
      "m1": "همی پاسبان برخروشید سخت",
      "m2": "که گشتاسپ شاهست و پیروز بخت",
      "verse_number": 2
    },
    {
      "id": "01d912b9-e687-4c3a-87ae-46e468d068a2",
      "m1": "چو ترکان شنیدند زان سان خروش",
      "m2": "نهادند یکسر به آواز گوش",
      "verse_number": 3
    },
    {
      "id": "e86f199a-6dea-42a7-a179-4aa9d7cdc34d",
      "m1": "دل کهرم از پاسبان خیره شد",
      "m2": "روانش ز آواز او تیره شد",
      "verse_number": 4
    },
    {
      "id": "3605a0da-7db3-42ce-9db9-8bc0b27b39e5",
      "m1": "چو بشنید با اندریمان بگفت",
      "m2": "که تیره شب آواز نتوان نهفت",
      "verse_number": 5
    },
    {
      "id": "1d475cb3-debd-4ee6-982a-1d094d60a685",
      "m1": "چه گویی که امشب چه شاید بدن",
      "m2": "بباید همی داستانها زدن",
      "verse_number": 6
    },
    {
      "id": "c63edbe5-edef-44c7-9695-adf4e320f60a",
      "m1": "که یارد گشادن بدین سان دو لب",
      "m2": "به بالین شاهی درین تیرهشب",
      "verse_number": 7
    },
    {
      "id": "3ea2bea5-ecad-4b22-a0b6-7e36ed5c4466",
      "m1": "بباید فرستاد تا هرک هست",
      "m2": "سرانشان به خنجر ببرند پست",
      "verse_number": 8
    },
    {
      "id": "c2b64101-772e-440b-840f-b3d33fd38163",
      "m1": "چه بازی کند پاسبان روز جنگ",
      "m2": "برین نامداران شود کار تنگ",
      "verse_number": 9
    },
    {
      "id": "77b0a93c-a27a-4484-88de-e68e3ed359d2",
      "m1": "وگر دشمن ما بود خانگی",
      "m2": "بجوی همی روز بیگانگی",
      "verse_number": 10
    },
    {
      "id": "6aaeb1bb-45ab-4dd4-b920-848be00fb614",
      "m1": "به آواز بد گفتن و فال بد",
      "m2": "بکوبیم مغزش به گوپال بد",
      "verse_number": 11
    },
    {
      "id": "8859111c-4bb7-4730-89af-1bf7cfbf2735",
      "m1": "بدین گونه آواز پیوسته شد",
      "m2": "دل کهرم از پاسبان خسته شد",
      "verse_number": 12
    },
    {
      "id": "71f7d469-2eef-4f3b-ae45-e2f09f2bb6e3",
      "m1": "ز بس نعره از هر سوی زین نشان",
      "m2": "پر آواز شد گوش گردنکشان",
      "verse_number": 13
    },
    {
      "id": "2e4caf96-1d09-494c-9107-93f937506820",
      "m1": "سپه گفت کآواز بسیار گشت",
      "m2": "از اندازهٔ پاسبان برگذشت",
      "verse_number": 14
    },
    {
      "id": "ec058d16-0b92-4d88-84f0-f20fd26640d8",
      "m1": "کنون دشمن از خانه بیرون کنیم",
      "m2": "ازان پس برین چاره افسون کنیم",
      "verse_number": 15
    },
    {
      "id": "b8a3ba70-942c-43e6-b7c9-2b8dd3ec74b1",
      "m1": "دل کهرم از پاسبان تنگ شد",
      "m2": "بپیچید و رویش پر آژنگ شد",
      "verse_number": 16
    },
    {
      "id": "1eb108ac-769a-4eb7-a33a-7dcb165c5242",
      "m1": "به لشکر چنین گفت کز خواب شاه",
      "m2": "دل من پر از رنج شد جان تباه",
      "verse_number": 17
    },
    {
      "id": "bc2b7694-29f5-42d9-83ec-a13efe23aa76",
      "m1": "کنون بیگمان باز باید شدن",
      "m2": "ندانم کزین پس چه شاید بدن",
      "verse_number": 18
    },
    {
      "id": "e9c45874-a0e3-4b23-bec3-3598126d445d",
      "m1": "بزرگان چنین روی برگاشتند",
      "m2": "به شب دشت پیکار بگذاشتند",
      "verse_number": 19
    },
    {
      "id": "1bceaf3b-d5d3-442b-a646-78b9691d5fa1",
      "m1": "پس اندر همی آمد اسفندیار",
      "m2": "زرهدار با گُرزهٔ گاوسار",
      "verse_number": 20
    },
    {
      "id": "760169ad-59d1-4ab2-953a-b3d2afe8952e",
      "m1": "چو کهرم بر بارهٔ دژ رسید",
      "m2": "پس لشکر ایرانیان را بدید",
      "verse_number": 21
    },
    {
      "id": "40b9f161-4242-4d5d-b801-5dc4fbf43724",
      "m1": "چنین گفت کاکنون به جز رزم کار",
      "m2": "چه ماندست با گرد اسفندیار",
      "verse_number": 22
    },
    {
      "id": "2f69741f-f3ea-4dfa-9e56-b757d6763b76",
      "m1": "همه تیغها برکشیم از نیام",
      "m2": "به خنجر فرستاد باید پیام",
      "verse_number": 23
    },
    {
      "id": "ee04fc52-0c9a-4243-8c85-0d2b5c0f68bb",
      "m1": "به چهره چو تاب اندر آورد بخت",
      "m2": "بران نامداران ببد کار سخت",
      "verse_number": 24
    },
    {
      "id": "3d651bbe-afd1-45d1-977e-705617a84ad3",
      "m1": "دو لشکر بران سان برآشوفتند",
      "m2": "همی بر سر یکدگر کوفتند",
      "verse_number": 25
    },
    {
      "id": "12b47feb-1dd2-4794-b1e5-019d25c22f8f",
      "m1": "چنین تا برآمد سپیدهدمان",
      "m2": "بزرگان چین را سرآمد زمان",
      "verse_number": 26
    },
    {
      "id": "c20b17f5-b409-4719-b734-98f8fa0d3ba3",
      "m1": "برفتند مردان اسفندیار",
      "m2": "بران نامور بارهٔ شهریار",
      "verse_number": 27
    },
    {
      "id": "440d810f-22e1-47a1-903e-aa5273897fb4",
      "m1": "بریده سر شاه ارجاسپ را",
      "m2": "جهاندار و خونیز لهراسپ را",
      "verse_number": 28
    },
    {
      "id": "fe2bb0ea-f373-442c-965f-069502742f37",
      "m1": "به پیش سپاه اندر انداختند",
      "m2": "ز پیکار ترکان بپرداختند",
      "verse_number": 29
    },
    {
      "id": "65fbcda3-a7f6-4e4c-a34a-74c4600a2db3",
      "m1": "خروشی برآمد ز توران سپاه",
      "m2": "ز سر برگرفتند گردان کلاه",
      "verse_number": 30
    },
    {
      "id": "949d63d5-b361-4bb6-88fc-a3d8682e10d3",
      "m1": "دو فرزند ارجاسپ گریان شدند",
      "m2": "چو بر آتش تیز بریان شدند",
      "verse_number": 31
    },
    {
      "id": "4fc83a25-94c1-4595-b062-9ae80d918c72",
      "m1": "بدانست لشکر که آن جنگ چیست",
      "m2": "وزان رزم بد بر که باید گریست",
      "verse_number": 32
    },
    {
      "id": "08623316-58f0-49c0-91f9-98fe185dee96",
      "m1": "بگفتند رادا دلیرا سرا",
      "m2": "سپهدار شیراوژنا مهترا",
      "verse_number": 33
    },
    {
      "id": "074bf3e6-d6c9-40f1-b682-13e9cfa275e7",
      "m1": "که کشتت که بر دشت کین کشته باد",
      "m2": "برو جاودان روز برگشته باد",
      "verse_number": 34
    },
    {
      "id": "7f851312-eaf3-461c-8500-dfada5e25b99",
      "m1": "سپردن کرا باید اکنون بنه",
      "m2": "درفش که داریم بر میمنه",
      "verse_number": 35
    },
    {
      "id": "28bcdadd-1141-46bd-8250-29bc30661028",
      "m1": "چو ارجاسپ پردخته شد قلبگاه",
      "m2": "مبادا کلاه و مبادا سپاه",
      "verse_number": 36
    },
    {
      "id": "91e0176c-80e7-43bf-b629-d6393813d135",
      "m1": "سپه را به مرگ آمد اکنون نیاز",
      "m2": "ز خَلُّخ پر از درد شد تا طراز",
      "verse_number": 37
    },
    {
      "id": "6f95bf95-12a6-44ee-9f5d-f57208b83df6",
      "m1": "ازان پس همه پیش مرگ آمدند",
      "m2": "زرهدار با گُرز و ترگ آمدند",
      "verse_number": 38
    },
    {
      "id": "3d20d3b9-040b-4d35-98d9-06f94a8b200b",
      "m1": "ده و دار برخاست از رزمگاه",
      "m2": "هوا شد به کردار ابر سیاه",
      "verse_number": 39
    },
    {
      "id": "8dffbe6e-353c-482c-85e6-548c9a924c00",
      "m1": "به هر جای بر تودهٔ کشته بود",
      "m2": "کسی را کجا روز برگشته بود",
      "verse_number": 40
    },
    {
      "id": "0b6424e2-c78d-4b04-ae71-5c1abd601161",
      "m1": "همه دشت بیتن سر و یال بود",
      "m2": "به جای دگر گُرز و گوپال بود",
      "verse_number": 41
    },
    {
      "id": "bce5f6e4-9d69-474f-9380-b2f967004e4e",
      "m1": "ز خون بر در دژ همی موج خاست",
      "m2": "که دانست دست چپ از دست راست",
      "verse_number": 42
    },
    {
      "id": "36aad79a-6111-4326-b3bb-032f28e46bb1",
      "m1": "چو اسفندیار اندر آمد ز جای",
      "m2": "سپهدار کهرم بیفشارد پای",
      "verse_number": 43
    },
    {
      "id": "b98e49fd-b9d3-441c-8d17-ab4d4e1d7ae0",
      "m1": "دو جنگی بران سان برآویختند",
      "m2": "که گفتی بهمشان برآمیختند",
      "verse_number": 44
    },
    {
      "id": "91ca377d-21b4-47e1-9a6a-4b68539a9327",
      "m1": "تهمتن کمربند کهرم گرفت",
      "m2": "مر او را ازان پشت زین برگرفت",
      "verse_number": 45
    },
    {
      "id": "33b0918e-8562-4202-a2b5-ecd8f42cd7e5",
      "m1": "برآوردش از جای و زد بر زمین",
      "m2": "همه لشکرش خواندند آفرین",
      "verse_number": 46
    },
    {
      "id": "74a0b609-603f-42ff-b77c-32c602685505",
      "m1": "دو دستش ببستند و بردند خوار",
      "m2": "پراگنده شد لشکر نامدار",
      "verse_number": 47
    },
    {
      "id": "b987a62b-9819-4464-a49e-a46e9d019734",
      "m1": "همی گُرز بارید همچون تگرگ",
      "m2": "زمین پر ز ترگ و هوا پر ز مرگ",
      "verse_number": 48
    },
    {
      "id": "8675354c-16dd-479b-bbf9-fa685b1393ea",
      "m1": "سر از تیغ پران چو برگ از درخت",
      "m2": "یکی ریخت خون و یکی یافت تخت",
      "verse_number": 49
    },
    {
      "id": "972e86a2-f1fb-458d-8781-7e4288cee5ef",
      "m1": "همی موج زد خون بران رزمگاه",
      "m2": "سری زیر نعل و سری با کلاه",
      "verse_number": 50
    },
    {
      "id": "f5934612-d0d0-4920-a305-41d2658115e1",
      "m1": "نداند کسی آرزوی جهان",
      "m2": "نخواهد گشادن بمابر نهان",
      "verse_number": 51
    },
    {
      "id": "079f29b6-170f-4dd0-a7d7-f8f441276984",
      "m1": "کسی کش سزاوار بد بارگی",
      "m2": "گریزان همی راند یکبارگی",
      "verse_number": 52
    },
    {
      "id": "9c475198-914b-4005-b9a8-4fbbed9a29a0",
      "m1": "هرانکس که شد در دم اژدها",
      "m2": "بکوشید و هم زو نیامد رها",
      "verse_number": 53
    },
    {
      "id": "edcf6bde-c45d-4e71-bfce-3715087e30d6",
      "m1": "ز ترکان چینی فراوان نماند",
      "m2": "وگر ماند کس نام ایشان نخواند",
      "verse_number": 54
    },
    {
      "id": "3d7fbbf0-13e2-463c-919e-4174a140201c",
      "m1": "همه ترگ و جوشن فرو ریختند",
      "m2": "هم از دیدهها خون برآمیختند",
      "verse_number": 55
    },
    {
      "id": "eeeb7f1a-2a3f-4eca-953a-abb1ec4e781e",
      "m1": "دوان پیش اسفندیار آمدند",
      "m2": "همه دیده چون جویبار آمدند",
      "verse_number": 56
    },
    {
      "id": "21ab9a66-db2e-441c-91dd-cc3469aa79e5",
      "m1": "سپهدار خونریز و بیداد بود",
      "m2": "سپاهش به بیدادگر شاد بود",
      "verse_number": 57
    },
    {
      "id": "56bf32a6-1403-4e24-b9b7-031080e2ded6",
      "m1": "کسی را نداد از یلان زینهار",
      "m2": "بکشتند زان خستگان بیشمار",
      "verse_number": 58
    },
    {
      "id": "d9db0d07-f367-416d-ac24-b0b9a7c914c6",
      "m1": "به توران زمین شهریاری نماند",
      "m2": "ز ترکان چین نامداری نماند",
      "verse_number": 59
    },
    {
      "id": "37825368-a9b4-4652-94a6-8281103258a8",
      "m1": "سراپرده و خیمه برداشتند",
      "m2": "بدان خستگان جای بگذاشتند",
      "verse_number": 60
    },
    {
      "id": "eb563cbd-8283-40d4-9142-68c72b4ef7ca",
      "m1": "بران روی دژ بر ستاره بزد",
      "m2": "چو پیدا شد از هر دری نیک و بد",
      "verse_number": 61
    },
    {
      "id": "a30e31f7-70a7-4218-aa41-175f1b2c7806",
      "m1": "بزد بر در دژ دو دار بلند",
      "m2": "فرو هشت از دار پیچان کمند",
      "verse_number": 62
    },
    {
      "id": "5264e669-2248-43b8-a4ef-5af7b76e581d",
      "m1": "سر اندریمان نگونسار کرد",
      "m2": "برادرش را نیز بر دار کرد",
      "verse_number": 63
    },
    {
      "id": "e99401b9-2e30-4649-bf18-edcca8bfd3d9",
      "m1": "سپاهی برون کرد بر هر سوی",
      "m2": "به جایی که آمد نشان گوی",
      "verse_number": 64
    },
    {
      "id": "d5959206-19a2-47ad-a3b3-63f4f53841ed",
      "m1": "بفرمود تا آتش اندر زدند",
      "m2": "همه شهر توران بهم بر زدند",
      "verse_number": 65
    },
    {
      "id": "361d269d-2b3f-4a78-bada-1908497671e8",
      "m1": "به جایی دگر نامداری نماند",
      "m2": "به چین و به توران سواری نماند",
      "verse_number": 66
    },
    {
      "id": "3c0929c1-5e12-43ac-927a-d8db097f75eb",
      "m1": "تو گفتی که ابری برآمد سیاه",
      "m2": "ببارید آتش بران رزمگاه",
      "verse_number": 67
    },
    {
      "id": "9c6ddf81-2b45-4ef9-8729-97ae9c7adec9",
      "m1": "جهانجوی چون کار زان گونه دید",
      "m2": "سران را بیاورد و می درکشید",
      "verse_number": 68
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 68
  },
