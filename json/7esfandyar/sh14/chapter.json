{
  "id": "1b6f6b0e-d9e8-4b02-8ff8-ed570fdfb17f",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "6e586fb4-2cd3-43d9-9ffa-fe14f9a4f381",
      "m1": "دبیر جهاندیده را پیش خواند",
      "m2": "ازان چاره و چنگ چندی براند",
      "verse_number": 1
    },
    {
      "id": "892a0b81-9320-4ad3-a573-b2dea750b067",
      "m1": "بر تخت بنشست فرخ دبیر",
      "m2": "قلم خواست و قرطاس و مشک و عبیر",
      "verse_number": 2
    },
    {
      "id": "65512ce6-70d3-492d-be5c-5dcf93dc91f5",
      "m1": "نخستین که نوک قلم شد سیاه",
      "m2": "گرفت آفرین بر خداوند ماه",
      "verse_number": 3
    },
    {
      "id": "6ce5a772-e685-4b49-b5cf-e5d637393f42",
      "m1": "خداوند کیوان و ناهید و هور",
      "m2": "خداوند پیل و خداوند مور",
      "verse_number": 4
    },
    {
      "id": "32c9e589-fe09-4349-9343-04a1da16b6f8",
      "m1": "خداوند پیروزی و فرهی",
      "m2": "خداوند دیهیم و شاهنشهی",
      "verse_number": 5
    },
    {
      "id": "10b7c948-c83d-46d8-a03e-6240dade9b81",
      "m1": "خداوند جان و خداوند رای",
      "m2": "خداوند نیکیده و رهنمای",
      "verse_number": 6
    },
    {
      "id": "aa95e836-bbc6-4229-998f-3413408df969",
      "m1": "ازو جاودان کام گشتاسپ شاد",
      "m2": "به مینو همه یاد لهراسپ باد",
      "verse_number": 7
    },
    {
      "id": "b63268d6-95e8-4d02-959d-0adc944b9a7a",
      "m1": "رسیدم به راهی به توران زمین",
      "m2": "که هرگز نخوانم برو آفرین",
      "verse_number": 8
    },
    {
      "id": "ac9a0c42-466f-4a44-979a-5453bc340419",
      "m1": "اگر برگشایم سراسر سخن",
      "m2": "سر مرد نو گردد از غم کهن",
      "verse_number": 9
    },
    {
      "id": "2c9a909a-bebf-4d8a-a1fd-4cdba22df7f0",
      "m1": "چه دستور باشد مرا شهریار",
      "m2": "بخوانم برو نامهٔ کارزار",
      "verse_number": 10
    },
    {
      "id": "ef2d0d62-7c7d-4701-af24-7312673e56cf",
      "m1": "به دیدار او شاد و خرم شوم",
      "m2": "ازین رنج دیرینه بیغم شوم",
      "verse_number": 11
    },
    {
      "id": "3f55b3a1-0235-4ad2-a9a5-96632211a5c8",
      "m1": "وزان چارههایی که من ساختم",
      "m2": "که تا دل ز کینه بپرداختم",
      "verse_number": 12
    },
    {
      "id": "6e12b500-1c92-4bd6-98eb-2c0a5c4483a7",
      "m1": "به رویین دژ ارجاسپ و کهرم نماند",
      "m2": "جز از مویه و درد و ماتم نماند",
      "verse_number": 13
    },
    {
      "id": "17a52350-ec01-4f41-b4ff-c8101bbfaaed",
      "m1": "کسی را ندادم به جان زینهار",
      "m2": "گیا در بیابان سرآورد بار",
      "verse_number": 14
    },
    {
      "id": "5244e2f1-e7a2-4588-8278-5928a341b2ff",
      "m1": "همی مغز مردم خورد شیر و گرگ",
      "m2": "جز از دل نجوید پلنگ سترگ",
      "verse_number": 15
    },
    {
      "id": "ea3859b2-5232-42a7-a68a-d53a61349759",
      "m1": "فلک روشن از تاج گشتاسپ باد",
      "m2": "زمین گلشن شاه لهراسپ باد",
      "verse_number": 16
    },
    {
      "id": "9dd4875f-83d0-4505-aa25-8bed805c0b96",
      "m1": "چو بر نامه بر مهر اسفندیار",
      "m2": "نهادند و جستند چندی سوار",
      "verse_number": 17
    },
    {
      "id": "10f77b17-4a04-467f-8689-6fde5a0659b8",
      "m1": "هیونان کفکافگن و تیزرو",
      "m2": "به ایران فرستاد سالار نو",
      "verse_number": 18
    },
    {
      "id": "b8d754e7-de53-4d9b-b153-197efe6d3c23",
      "m1": "بماند از پی پاسخ نامه را",
      "m2": "بکشت آتش مرد بدکامه را",
      "verse_number": 19
    },
    {
      "id": "ac6c94a3-9283-4f80-8dd9-18eec80094bc",
      "m1": "بسی برنیامد که پاسخ رسید",
      "m2": "یکی نامه بد بند بد را کلید",
      "verse_number": 20
    },
    {
      "id": "3ee24f44-e0a2-4f87-9362-53d3698ce269",
      "m1": "سر پاسخ نامه بود از نخست",
      "m2": "که پاینده بادآنک نیکی بجست",
      "verse_number": 21
    },
    {
      "id": "ad287081-8cc0-47fa-b44a-dd4e81750017",
      "m1": "خرد یافته مرد یزدان شناس",
      "m2": "به نیکی ز یزدان شناسد سپاس",
      "verse_number": 22
    },
    {
      "id": "d5e1c21e-586f-4bf8-8a8b-3dea7d181a11",
      "m1": "دگر گفت کز دادگر یک خدای",
      "m2": "بخواهیم کو باشدت رهنمای",
      "verse_number": 23
    },
    {
      "id": "6e29a7ee-2e23-4c3d-ae02-3c3ebf1db160",
      "m1": "درختی بکشتم به باغ بهشت",
      "m2": "کزان بارورتر فریدون نکشت",
      "verse_number": 24
    },
    {
      "id": "5ba30c26-5f50-4931-94a5-6c043bb2f8da",
      "m1": "برش سرخ یاقوت و زر آمدست",
      "m2": "همه برگ او زیب و فر آمدست",
      "verse_number": 25
    },
    {
      "id": "6ef64856-1666-47b0-8d46-bd0df528094d",
      "m1": "بماناد تا جاودان این درخت",
      "m2": "ترا باد شادان دل و نیکبخت",
      "verse_number": 26
    },
    {
      "id": "dfa35810-ef9b-4076-848b-df2bd66bad5a",
      "m1": "یکی آنک گفتی که کین نیا",
      "m2": "بجستم پر از چاره و کیمیا",
      "verse_number": 27
    },
    {
      "id": "f39e6cdc-dc00-40ee-92b4-e8fdfa014587",
      "m1": "دگر آنک گفتی ز خون ریختن",
      "m2": "به تنها به رزم اندر آویختن",
      "verse_number": 28
    },
    {
      "id": "7f68e7c7-1b86-4613-9092-2b1d65c7d42b",
      "m1": "تن شهریاران گرامی بود",
      "m2": "که از کوشش سخت نامی بود",
      "verse_number": 29
    },
    {
      "id": "2cd8afbe-9d6e-47bb-902b-fc4dfe2aca91",
      "m1": "نگهدار تن باش و آن خرد",
      "m2": "که جان را به دانش خرد پرورد",
      "verse_number": 30
    },
    {
      "id": "8c42eb98-a8ac-4653-a84f-ae8e5aced9df",
      "m1": "سه دیگر که گفتی به جان زینهار",
      "m2": "ندادم کسی را ز چندان سوار",
      "verse_number": 31
    },
    {
      "id": "5935d91e-75c5-4851-bff4-b53c9c5d6c31",
      "m1": "همیشه دلت مهربان باد و گرم",
      "m2": "پر از شرم جان لب پر آوای نرم",
      "verse_number": 32
    },
    {
      "id": "cc8ff25f-0de6-402f-acbb-1f383a2cdc86",
      "m1": "مبادا ترا پیشه خون ریختن",
      "m2": "نه بیکینه با مهتر آویختن",
      "verse_number": 33
    },
    {
      "id": "1e0e51d2-cb44-42dd-bd6e-1bc1d080dc7e",
      "m1": "به کین برادرت بی سی و هشت",
      "m2": "از اندازه خون ریختن درگذشت",
      "verse_number": 34
    },
    {
      "id": "02d62586-fea2-4230-9b00-e72dbf1118ab",
      "m1": "و دیگر کزان پیر گشته نیا",
      "m2": "ز دل دور کرده بد و کیمیا",
      "verse_number": 35
    },
    {
      "id": "caff012e-2ca7-41b2-9f8d-44eed44e0bca",
      "m1": "چو خون ریختندش تو خون ریختی",
      "m2": "چو شیران جنگی برآویختی",
      "verse_number": 36
    },
    {
      "id": "0ec36319-01a0-401e-8a03-ab18e06265f5",
      "m1": "همیشه بدی شاد و به روزگار",
      "m2": "روان را خرد بادت آموزگار",
      "verse_number": 37
    },
    {
      "id": "1db0c32f-d7f2-48e8-b6fc-b421c2d87988",
      "m1": "نیازست ما را به دیدار تو",
      "m2": "بدان پر خرد جان بیدار تو",
      "verse_number": 38
    },
    {
      "id": "37d361f2-1bb7-4e26-b251-fd2679c372c6",
      "m1": "چه نامه بخوانی بنه بر نشان",
      "m2": "بدین بارگاه آی با سرکشان",
      "verse_number": 39
    },
    {
      "id": "0548acec-f964-48d7-9cf0-5567382ad89b",
      "m1": "هیون تگاور ز در بازگشت",
      "m2": "همه شهر ایران پرآواز گشت",
      "verse_number": 40
    },
    {
      "id": "761c47f9-952a-434c-84c2-94bb21b65fc2",
      "m1": "سوار هیونان چو باز آمدند",
      "m2": "به نزد تهمتن فراز آمدند",
      "verse_number": 41
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 41
  }
}