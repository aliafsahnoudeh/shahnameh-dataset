{
  "id": "ab10d2b4-0656-40db-8e86-0acb726d891d",
  "title": "بخش ۱۵",
  "verses": [
    {
      "id": "e6a7fd51-e377-4b30-9a68-6cf49242b1a1",
      "m1": "چو آن نامه برخواند اسفندیار",
      "m2": "ببخشید دینار و برساخت کار",
      "verse_number": 1
    },
    {
      "id": "d4e2272b-d7af-4f4b-a904-355671371e3d",
      "m1": "جز از گنج ارجاسپ چیزی نماند",
      "m2": "همه گنج خویشان او برفشاند",
      "verse_number": 2
    },
    {
      "id": "2ae09d43-7234-4ae5-9b2d-ee0cb03090e1",
      "m1": "سپاهش همه زو توانگر شدند",
      "m2": "از اندازهٔ کار برتر شدند",
      "verse_number": 3
    },
    {
      "id": "f3ae1450-67c9-479a-9772-14d2cd402021",
      "m1": "شتر بود و اسپان به دشت و به کوه",
      "m2": "به داغ سپهدار توران گروه",
      "verse_number": 4
    },
    {
      "id": "f38debcc-5c0f-4551-b225-b92eb5dbbd86",
      "m1": "هیون خواست از هر دری دههزار",
      "m2": "پراگنده از دشت وز کوهسار",
      "verse_number": 5
    },
    {
      "id": "5d280bbd-ba37-404f-b06d-e72264ce871f",
      "m1": "همه گنج ارجاسپ در باز کرد",
      "m2": "به کپان درم سختن آغاز کرد",
      "verse_number": 6
    },
    {
      "id": "9b920048-6cf5-43e9-b937-775a270ea5ba",
      "m1": "هزار اشتر از گنج دینار شاه",
      "m2": "چو سیصد ز دیبا و تخت و کلاه",
      "verse_number": 7
    },
    {
      "id": "92a1819a-e63f-4e0e-a798-00db0f557511",
      "m1": "صد از مشک و ز عنبر و گوهران",
      "m2": "صد از تاج وز نامدار افسران",
      "verse_number": 8
    },
    {
      "id": "bdae03de-76bf-4fc8-83df-45551ecbd82d",
      "m1": "از افگندنیهای دیبا هزار",
      "m2": "بفرمود تا برنهادند بار",
      "verse_number": 9
    },
    {
      "id": "b210d89f-93d8-4a67-a83c-50bd3de845e6",
      "m1": "چو سیصد شتر جامهٔ چینیان",
      "m2": "ز منسوج و زربفت وز پرنیان",
      "verse_number": 10
    },
    {
      "id": "609cac23-2260-44af-8c01-cf8959c46244",
      "m1": "عماری بسیچید و دیبا جلیل",
      "m2": "کنیزک ببردند چینی دو خیل",
      "verse_number": 11
    },
    {
      "id": "b0f15409-d6f6-49cd-8a47-133fb0b3815b",
      "m1": "به رخ چون بهار و به بالا چو سرو",
      "m2": "میانها چو غرو و به رفتن تذرو",
      "verse_number": 12
    },
    {
      "id": "d36912fc-c7bc-44b3-ae76-0d1b3a4131f1",
      "m1": "ابا خواهران یل اسفندیار",
      "m2": "برفتند بت روی صد نامدار",
      "verse_number": 13
    },
    {
      "id": "50d1333f-a92d-4421-b849-cb298700f8ed",
      "m1": "ز پوشیده رویان ارجاسپ پنج",
      "m2": "ببردند بامویه و درد و رنج",
      "verse_number": 14
    },
    {
      "id": "7e55ed45-e317-4131-8af4-1c3fc3fc4a89",
      "m1": "دو خواهر دو دختر یکی مادرش",
      "m2": "پر از درد و با سوک و خسته برش",
      "verse_number": 15
    },
    {
      "id": "1a06bb7d-7b1b-4a05-9faa-0d7b2d70c372",
      "m1": "چو آتش به رویین دژ اندر فگند",
      "m2": "زبانه برآمد به چرخ بلند",
      "verse_number": 16
    },
    {
      "id": "c94fb49a-a560-42bb-b47d-2617ba0ef1cc",
      "m1": "همه بارهٔ شهر زد بر زمین",
      "m2": "برآورد گرد از بر و بوم چین",
      "verse_number": 17
    },
    {
      "id": "065994cf-cb7f-4c5d-a5f7-23e4bcaea276",
      "m1": "سه پور جوان را سپهدار گفت",
      "m2": "پراگنده باشید با گنج جفت",
      "verse_number": 18
    },
    {
      "id": "69e0f175-a550-469d-9a27-44a3f8ae5696",
      "m1": "به راه ار کسی سر بپیچد ز داد",
      "m2": "سرانشان به خنجر ببرید شاد",
      "verse_number": 19
    },
    {
      "id": "e2b1ef95-872b-416d-96f6-c3d625741404",
      "m1": "شما راه سوی بیابان برید",
      "m2": "سنانها چو خورشید تابان برید",
      "verse_number": 20
    },
    {
      "id": "30ae2b5a-bcd8-4b78-9b78-4f8d6363e7c0",
      "m1": "سوی هفتخوان من به نخجیر شیر",
      "m2": "بیابم شما ره مپویید دیر",
      "verse_number": 21
    },
    {
      "id": "9f746711-7d0d-4320-a75b-9b946633b1da",
      "m1": "نخستین بگیرم سر راه را",
      "m2": "ببینم شما را سر ماه را",
      "verse_number": 22
    },
    {
      "id": "46eacd5a-2c70-4e17-bdad-c7a09e18bcfb",
      "m1": "سوی هفتخوان آمد اسفندیار",
      "m2": "به نخجیر با لشکری نامدار",
      "verse_number": 23
    },
    {
      "id": "dc389a0a-9e42-4267-b4b0-daabe6e0acf3",
      "m1": "چو نزدیک آن جای سرما رسید",
      "m2": "همه خواسته گرد بر جای دید",
      "verse_number": 24
    },
    {
      "id": "165a332e-0e21-4b5c-9be5-43d84b2d377d",
      "m1": "هوا خوشگوار و زمین پرنگار",
      "m2": "تو گفتی به تیر اندر آمد بهار",
      "verse_number": 25
    },
    {
      "id": "13097ec6-83c1-4298-aca1-b8479fa7fc19",
      "m1": "وزان جایگه خواسته برگرفت",
      "m2": "همی ماند از کار اختر شگفت",
      "verse_number": 26
    },
    {
      "id": "7cd37fad-878c-4e33-8541-5cf6fef92f65",
      "m1": "چو نزدیکی شهر ایران رسید",
      "m2": "به جای دلیران و شیران رسید",
      "verse_number": 27
    },
    {
      "id": "474e8c72-f664-4f3b-9414-af497cc46666",
      "m1": "دو هفته همی بود با یوز و باز",
      "m2": "غمی بود از رنج راه دراز",
      "verse_number": 28
    },
    {
      "id": "30d435e4-d90d-474d-a71f-b3a5c4ab36d6",
      "m1": "سه فرزند پرمایه را چشم داشت",
      "m2": "ز دیر آمدنشان به دل خشم داشت",
      "verse_number": 29
    },
    {
      "id": "6f9cae28-bf21-4ae9-9816-efcbe93f5a4d",
      "m1": "به نزد پدر چو بیامد پسر",
      "m2": "بخندید با هر یکی تاجور",
      "verse_number": 30
    },
    {
      "id": "ef789827-b8aa-499c-ab3a-9c907949a193",
      "m1": "که راهی درشت این که من کوفتم",
      "m2": "ز دیر آمدنتان برآشوفتم",
      "verse_number": 31
    },
    {
      "id": "2361088e-7c4c-4029-a974-0c895ac0d3e3",
      "m1": "زمین بوسه دادند هر سه پسر",
      "m2": "که چون تو که باشد به گیتی پدر",
      "verse_number": 32
    },
    {
      "id": "ee0ac30f-e800-421e-8ce2-bdc9e7d6fa30",
      "m1": "وزان جایگه سوی ایران کشید",
      "m2": "همه گنج سوی دلیران کشید",
      "verse_number": 33
    },
    {
      "id": "64329487-b7c5-4556-ac14-8186043051a9",
      "m1": "همه شهر ایران بیاراستند",
      "m2": "می و رود و رامشگران خواستند",
      "verse_number": 34
    },
    {
      "id": "5ce289ae-8de1-4cc2-88a0-7705c88fdbb7",
      "m1": "ز دیوارها جامه آویختند",
      "m2": "زبر مشک و عنبر همی بیختند",
      "verse_number": 35
    },
    {
      "id": "7d55e33b-ca64-4d78-b7e1-359f32a36552",
      "m1": "هوا پر ز آوای رامشگران",
      "m2": "زمین پر سواران نیزهوران",
      "verse_number": 36
    },
    {
      "id": "5dfd41bb-c814-4ca5-87b4-b4a57f8343d5",
      "m1": "چو گشتاسپ بشنید رامش گزید",
      "m2": "به آواز او جام می درکشید",
      "verse_number": 37
    },
    {
      "id": "e5f0e85e-b197-4931-a839-de315a16ff0b",
      "m1": "ز لشکر بفرمود تا هرک بود",
      "m2": "ز کشور کسی کو بزرگی نمود",
      "verse_number": 38
    },
    {
      "id": "00873c36-75bc-4044-ac01-22e8fcc48c82",
      "m1": "همه با درفش و تبیره شدند",
      "m2": "بزرگان لشکر پذیره شدند",
      "verse_number": 39
    },
    {
      "id": "3e16f4c1-bb14-4e8a-b94f-5f67197b2f6e",
      "m1": "پدر رفت با نامور بخردان",
      "m2": "بزرگان فرزانه و موبدان",
      "verse_number": 40
    },
    {
      "id": "82d83405-01d9-4311-b771-e47702f3c603",
      "m1": "بیامد به پیش پسر تازهروی",
      "m2": "همه شهر ایران پر از گفت و گوی",
      "verse_number": 41
    },
    {
      "id": "808e8c35-796b-4388-8ac2-ad73f96209fd",
      "m1": "چو روی پدر دید شاه جوان",
      "m2": "دلش گشت شادان و روشنروان",
      "verse_number": 42
    },
    {
      "id": "c7e1d562-a8ec-4013-9fea-76b25171a443",
      "m1": "برانگیخت از جای شبرنگ را",
      "m2": "فروزندهٔ آتش جنگ را",
      "verse_number": 43
    },
    {
      "id": "fdab4c5f-5511-43c4-aa92-13371d24d357",
      "m1": "بیامد پدر را به بر در گرفت",
      "m2": "پدر ماند از کار او در شگفت",
      "verse_number": 44
    },
    {
      "id": "fbe3bfc0-9054-4e61-ad38-8b9f3fab4597",
      "m1": "بسی خواند بر فر او آفرین",
      "m2": "که بیتو مبادا زمان و زمین",
      "verse_number": 45
    },
    {
      "id": "d5cdc7ad-c7a4-4f13-8499-508096893e2b",
      "m1": "وزانجا به ایوان شاه آمدند",
      "m2": "جهانی ورا نیکخواه آمدند",
      "verse_number": 46
    },
    {
      "id": "0151a87d-e386-40e2-a9cc-621cced4ee9e",
      "m1": "بیاراست گشتاسپ ایوان و تخت",
      "m2": "دلش گشت خرم بدان نیکبخت",
      "verse_number": 47
    },
    {
      "id": "29920802-016a-4b0c-85c3-f8fa8b2b65e8",
      "m1": "به ایوانها در نهادند خوان",
      "m2": "به سالار گفتا مهان را بخوان",
      "verse_number": 48
    },
    {
      "id": "ef4d6602-978c-4de6-ab97-c2a412581308",
      "m1": "بیامد ز هر گنبدی میگسار",
      "m2": "به نزدیک آن نامور شهریار",
      "verse_number": 49
    },
    {
      "id": "240e9902-3fa4-4a35-9421-6fcdbb8d600d",
      "m1": "می خسروانی به جام بلور",
      "m2": "گسارنده می داد رخشان چو هور",
      "verse_number": 50
    },
    {
      "id": "dcd33c48-081c-4364-85e4-e33e2e443895",
      "m1": "همه چهرهٔ دوستان برفروخت",
      "m2": "دل دشمنان را به آتش بسوخت",
      "verse_number": 51
    },
    {
      "id": "1f231827-94c2-4e37-881b-a703795c7620",
      "m1": "پسر خورد با شرم یاد پدر",
      "m2": "پدر همچنان نیز یاد پسر",
      "verse_number": 52
    },
    {
      "id": "f5b4bfbd-6b48-4d3d-bf3f-ef84f16dbd34",
      "m1": "بپرسید گشتاسپ از هفتخوان",
      "m2": "پدر را پسر گفت نامه بخوان",
      "verse_number": 53
    },
    {
      "id": "5acf2b03-40d4-4b86-aae0-ba0a2f1e7f6b",
      "m1": "سخنهای دیرینه یاد آوریم",
      "m2": "به گفتار لب را به داد آوریم",
      "verse_number": 54
    },
    {
      "id": "fee0a5fd-bcee-4a65-9d7e-68d19b8a95e8",
      "m1": "چو فردا به هشیاری آن بشنوی",
      "m2": "به پیروزی دادگر بگروی",
      "verse_number": 55
    },
    {
      "id": "8d17f901-3179-40a5-9b2f-997e78da7b04",
      "m1": "برفتند هرکس که گشتند مست",
      "m2": "یکی ماهرخ دست ایشان به دست",
      "verse_number": 56
    },
    {
      "id": "d3b7add1-8fb3-4355-bdaa-7ab3b16bbedc",
      "m1": "سرآمد کنون قصهٔ هفتخوان",
      "m2": "به نام جهان داور این را بخوان",
      "verse_number": 57
    },
    {
      "id": "8637da54-f761-491e-a2f9-bde2e7718139",
      "m1": "که او داد بر نیک و بد دستگاه",
      "m2": "خداوند خورشید و تابنده ماه",
      "verse_number": 58
    },
    {
      "id": "bfbe2c01-b825-4397-8662-18b6108e1827",
      "m1": "اگر شاه پیروز بپسندد این",
      "m2": "نهادیم بر چرخ گردنده زین",
      "verse_number": 59
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 59
  }
}