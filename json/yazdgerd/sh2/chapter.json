{
  "id": "f585983d-fd26-4d73-a0a4-9432da6e6322",
  "title": "بخش ۲ - پادشاهی هرمز یک سال بود",
  "verses": [
    {
      "id": "7a6d5107-be3b-4cf2-ae1d-ffed3b62d1c5",
      "m1": "چو هرمز برآمد به تخت پدر",
      "m2": "به سر برنهاد آن کیی تاج زر",
      "verse_number": 1
    },
    {
      "id": "bcff3521-00b7-4097-82e9-eecc78905d74",
      "m1": "چو پیروز را ویژه گفتی ز خشم",
      "m2": "همی آب رشک اندر آمد به چشم",
      "verse_number": 2
    },
    {
      "id": "c4a3abfe-3c70-4848-89bc-12a8f21646ad",
      "m1": "سوی شاه هیتال شد ناگهان",
      "m2": "ابا لشکر و گنج و چندی مهان",
      "verse_number": 3
    },
    {
      "id": "4358d68b-025e-4dbb-85e5-83a680e4cbc2",
      "m1": "چغانی شهی بد فغانیش نام",
      "m2": "جهانجوی با لشکر و گنج و کام",
      "verse_number": 4
    },
    {
      "id": "88b66747-9b09-4b40-bbf2-d2c1a2f1177b",
      "m1": "فغانیش را گفت کای نیکخواه",
      "m2": "دو فرزند بودیم زیبای گاه",
      "verse_number": 5
    },
    {
      "id": "859991af-0a45-4490-88e9-9f171a473c3d",
      "m1": "پدر تاج شاهی به کهتر سپرد",
      "m2": "چو بیدادگر بد سپرد و بمرد",
      "verse_number": 6
    },
    {
      "id": "e5e71f64-8257-4212-acfd-7322e0885cf2",
      "m1": "چو لشکر دهی مر مرا گنج هست",
      "m2": "سلیح و بزرگی و نیروی دست",
      "verse_number": 7
    },
    {
      "id": "d8c239b7-4d83-4b3a-b29a-3ab2d1df348c",
      "m1": "فغانی بدو گفت که آری رواست",
      "m2": "جهاندار هم بر پدر پادشاست",
      "verse_number": 8
    },
    {
      "id": "4c2c5083-43f2-4d53-833c-117824119c26",
      "m1": "به پیمان سپارم سپاهی تو را",
      "m2": "نمایم سوی داد راهی تو را",
      "verse_number": 9
    },
    {
      "id": "e5b0a119-f0a6-4875-81bc-8c37ed9589e2",
      "m1": "که باشد مرا ترمذ و ویسه گرد",
      "m2": "که خون عهد این دارم از یزدگرد",
      "verse_number": 10
    },
    {
      "id": "a293bf87-dc9e-4984-9a07-987d32bf37b2",
      "m1": "بدو گفت پیروز کری رواست",
      "m2": "فزون زان بتو پادشاهی سزاست",
      "verse_number": 11
    },
    {
      "id": "673f3a6c-0ee4-4ab9-b330-811039d552a0",
      "m1": "بدو داد شمشیرزن سیهزار",
      "m2": "ز هیتالیان لشکری نامدار",
      "verse_number": 12
    },
    {
      "id": "5b58addc-c9bf-4b49-83c1-ccf5d1ff2630",
      "m1": "سپاهی بیاورد پیروزشاه",
      "m2": "که از گرد تاریک شد چرخ ماه",
      "verse_number": 13
    },
    {
      "id": "be222132-fb9a-4fd5-841f-2eb0ea3d53cb",
      "m1": "برآویخت با هرمز شهریار",
      "m2": "فراوان ببودستشان کارزار",
      "verse_number": 14
    },
    {
      "id": "319f4ff3-3f44-4841-ba1c-8202e5ae5cf2",
      "m1": "سرانجام هرمز گرفتار شد",
      "m2": "همه تاجها پیش او خوار شد",
      "verse_number": 15
    },
    {
      "id": "671f81c2-9719-4185-a1c1-275628486b84",
      "m1": "چو پیروز روی برادر بدید",
      "m2": "دلش مهر پیوند او برگزید",
      "verse_number": 16
    },
    {
      "id": "c813a743-5eec-42fe-aa70-183c4240963d",
      "m1": "بفرمود تا بارگی برنشست",
      "m2": "بشد تیز و ببسود رویش بدست",
      "verse_number": 17
    },
    {
      "id": "94c88a34-fc3e-4b3b-8bab-3d85f1729cc2",
      "m1": "فرستاد بازش بایوان خویش",
      "m2": "بدو خوانده بد عهد و پیمان خویش",
      "verse_number": 18
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 18
  },
  "order_in_parent": 2
}