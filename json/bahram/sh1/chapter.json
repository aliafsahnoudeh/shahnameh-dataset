{
  "id": "f452ba7a-a1c3-4bfb-a548-1a90b1bcae9f",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "c80b38bd-d8b7-4feb-b4d4-650af19be051",
      "m1": "چو بهرام بنشست بر تخت زر",
      "m2": "دل و مغز جوشان ز مرگ پدر",
      "verse_number": 1
    },
    {
      "id": "234c9701-ff7f-46a8-abfe-ab60a35391a8",
      "m1": "همه نامداران ایرانیان",
      "m2": "برفتند پیشش کمر بر میان",
      "verse_number": 2
    },
    {
      "id": "3aac428c-6e4b-4b2a-a371-db6ab82b750d",
      "m1": "برو خواندند آفرین خدای",
      "m2": "که تا جای باشد تو مانی به جای",
      "verse_number": 3
    },
    {
      "id": "3beccb99-69c3-4699-b227-88ff486f7eac",
      "m1": "که تاج کیی تارکت را سزاست",
      "m2": "پدر بر پدر پادشاهی تراست",
      "verse_number": 4
    },
    {
      "id": "04927082-f610-42cb-b791-b9e37327fe43",
      "m1": "رخ بدسگالان تو زرد باد",
      "m2": "وزان رفته جان تو بیدرد باد",
      "verse_number": 5
    },
    {
      "id": "b68c720e-0496-4b99-81c9-04476a7b7b96",
      "m1": "چنین داد پاسخ که ای مهتران",
      "m2": "سواران جنگی و کنداوران",
      "verse_number": 6
    },
    {
      "id": "22dcae76-f164-4d72-94b4-928293aca613",
      "m1": "ز دهقان وز مرد خسروپرست",
      "m2": "به گیتی سوی بد میازید دست",
      "verse_number": 7
    },
    {
      "id": "4ddbf78f-0a15-46bd-b69c-a76f96c0015c",
      "m1": "بدانید کاین چرخ ناپایدار",
      "m2": "نه پرورده داند نه پروردگار",
      "verse_number": 8
    },
    {
      "id": "d1ab1d64-9bfd-4fe8-acdb-957036974448",
      "m1": "سراسر ببندید دست از هوا",
      "m2": "هوا را مدارید فرمانروا",
      "verse_number": 9
    },
    {
      "id": "29746944-7a00-45be-95eb-faaedcdd70fa",
      "m1": "کسی کو بپرهیزد از بدکنش",
      "m2": "نیالاید اندر بدیها تنش",
      "verse_number": 10
    },
    {
      "id": "20e89542-5c27-4cf3-a657-b20359db1393",
      "m1": "بدین سوی همواره خرم بود",
      "m2": "گه رفتن آیدش بیغم بود",
      "verse_number": 11
    },
    {
      "id": "41c0b014-5125-4cb7-bdf9-032c88d58c3c",
      "m1": "پناهی بود گنج را پادشا",
      "m2": "نوازندهٔ مردم پارسا",
      "verse_number": 12
    },
    {
      "id": "8f521a1b-3f48-4e71-a845-92b41b22bff2",
      "m1": "تن شاه دین را پناهی بود",
      "m2": "که دین بر سر او کلاهی بود",
      "verse_number": 13
    },
    {
      "id": "c07f4685-63fd-4f6c-a6cd-c8ad17e679bc",
      "m1": "خنک آنک در خشم هشیارتر",
      "m2": "همان بر زمین او بیآزارتر",
      "verse_number": 14
    },
    {
      "id": "8f30d4b7-f263-4c3e-9e31-78f99a36d2d1",
      "m1": "گه دست تنگی دلی شاد و راد",
      "m2": "جهان بیتن مرد دانا مباد",
      "verse_number": 15
    },
    {
      "id": "2fc2f8bb-b3cb-47e0-8eea-b4c17e2ca9ab",
      "m1": "چو بر دشمنی بر توانا بود",
      "m2": "به پی نسپرد ویژه دانا بود",
      "verse_number": 16
    },
    {
      "id": "f65c9e7e-5771-498c-a464-0a92989c508f",
      "m1": "ستیزه نه نیک آید از نامجوی",
      "m2": "بپرهیز و گرد ستیزه مپوی",
      "verse_number": 17
    },
    {
      "id": "b1572a8a-eb9c-4dd3-a758-57cbd7cb8633",
      "m1": "سپاهی و دهقان و بیکار شاه",
      "m2": "چنان دان که هر سه ندارند راه",
      "verse_number": 18
    },
    {
      "id": "3664f166-f65d-491f-b785-c1b6851bda22",
      "m1": "به خواب اندرست آنک بیکار بود",
      "m2": "پشیمان شود پس چو بیدار بود",
      "verse_number": 19
    },
    {
      "id": "710190fc-090f-4474-ba70-ff018fc9eace",
      "m1": "ز گفتار نیکو و کردار زشت",
      "m2": "ستایش نیابی نه خرم بهشت",
      "verse_number": 20
    },
    {
      "id": "496e30a7-d573-4e68-ad20-eb3c69f4fbeb",
      "m1": "همه نام جویید و نیکی کنید",
      "m2": "دل نیک پی مردمان مشکنید",
      "verse_number": 21
    },
    {
      "id": "e3d4e30f-20b1-498d-9b75-4681dc35cbf7",
      "m1": "مرا گنج و دینار بسیار هست",
      "m2": "بزرگی و شاهی و نیروی دست",
      "verse_number": 22
    },
    {
      "id": "e900ca87-49e7-465c-959d-9f46d7be540b",
      "m1": "خورید آنک دارید و آن را که نیست",
      "m2": "بداند که با گنج ما او یکیست",
      "verse_number": 23
    },
    {
      "id": "0675439d-b158-4f2f-949c-b768e2683b4e",
      "m1": "سر بدرهٔ ما گشادست باز",
      "m2": "نباید نشستن کس اندر نیاز",
      "verse_number": 24
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 24
  }
}