{
  "id": "21c4d17d-ba04-4319-a698-67da7533d440",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "b1f543e5-3744-4a46-b4ae-483b39e713cb",
      "m1": "ز شاهیش بگذشت چون هفت سال",
      "m2": "همه موبدان زو به رنج و وبال",
      "verse_number": 1
    },
    {
      "id": "1c391dc3-c000-4804-86b7-3e7ab470bc08",
      "m1": "سر سال هشتم مه فروَدین",
      "m2": "که پیدا کند در جهان هور دین",
      "verse_number": 2
    },
    {
      "id": "6202992d-c20d-4844-8be0-56aabf1fef89",
      "m1": "یکی کودک آمدش هرمزد روز",
      "m2": "به نیک اختر و فال گیتی فروز",
      "verse_number": 3
    },
    {
      "id": "5cacd769-2439-437b-8757-e6d474232123",
      "m1": "همآنگه پدر کرد بهرام نام",
      "m2": "ازان کودک خرد شد شادکام",
      "verse_number": 4
    },
    {
      "id": "2495b87f-0bf2-457f-acf4-096af8d57d0c",
      "m1": "به در بر ستارهشمر هرک بود",
      "m2": "که شایست گفتار ایشان شنود",
      "verse_number": 5
    },
    {
      "id": "6614a9d3-34f5-40fe-9883-b4f5dbda2963",
      "m1": "یکی مایهور بود با فر و هوش",
      "m2": "سر هندوان بود نامش سروش",
      "verse_number": 6
    },
    {
      "id": "ab4233b0-ac0a-4bb4-87c0-2333b3a419db",
      "m1": "یکی پارسی بود هشیار نام",
      "m2": "که بر چرخ کردی به دانش لگام",
      "verse_number": 7
    },
    {
      "id": "18d63e91-5a9f-4399-970e-4a2d006a1fcf",
      "m1": "بفرمود تا پیش شاه آمدند",
      "m2": "هشیوار و جوینده راه آمدند",
      "verse_number": 8
    },
    {
      "id": "9407c762-b312-4922-8944-9336a033b8db",
      "m1": "به صلاب کردند ز اختر نگاه",
      "m2": "هم از زیچ رومی بجستند راه",
      "verse_number": 9
    },
    {
      "id": "5c89fd7a-7622-4eab-9b4d-3b221e4270a8",
      "m1": "از اختر چنان دید خرم نهان",
      "m2": "که او شهریاری بود در جهان",
      "verse_number": 10
    },
    {
      "id": "49d908cd-ee97-44ad-b34b-83d284ee3d8f",
      "m1": "ابر هفت کشور بود پادشا",
      "m2": "گو شاددل باشد و پارسا",
      "verse_number": 11
    },
    {
      "id": "238f01b8-784c-4f3a-893d-d0e77d607a05",
      "m1": "برفتند پویان بر شهریار",
      "m2": "همان زیچ و صلابها بر کنار",
      "verse_number": 12
    },
    {
      "id": "8c851bfb-9870-4ff7-adb3-92de1d2d8fb6",
      "m1": "بگفتند با تاجور یزدگرد",
      "m2": "که دانش ز هرگونه کردیم گرد",
      "verse_number": 13
    },
    {
      "id": "797e2147-3076-4e08-b417-66600492ec3a",
      "m1": "چنان آمد اندر شمار سپهر",
      "m2": "که دارد بدین کودک خرد مهر",
      "verse_number": 14
    },
    {
      "id": "0508fc47-88ed-46d8-b266-a9f6a0ece026",
      "m1": "مر او را بود هفت کشور زمین",
      "m2": "گرانمایه شاهی بود بافرین",
      "verse_number": 15
    },
    {
      "id": "73fb19ca-86c7-48e9-9f07-724b020b1cc6",
      "m1": "ز گفتارشان شاد شد شهریار",
      "m2": "ببخشیدشان گوهر شاهوار",
      "verse_number": 16
    },
    {
      "id": "85ac28dc-598c-4afc-b541-612acbb84e53",
      "m1": "چو ایشان برفتند زان بارگاه",
      "m2": "رد و موبد و پاک دستور شاه",
      "verse_number": 17
    },
    {
      "id": "da72a4e9-a5e0-4270-a5b7-1c9d53dbedca",
      "m1": "نشستند و جستند هرگونه رای",
      "m2": "که تا چارهٔ آن چه آید به جای",
      "verse_number": 18
    },
    {
      "id": "7a3a2e9c-f1cb-4617-8091-91b59512f5dd",
      "m1": "گرین کودک خرد خوی پدر",
      "m2": "نگیرد شو خسروی دادگر",
      "verse_number": 19
    },
    {
      "id": "cdc47e9e-b977-4d21-b46d-1180f91cfdeb",
      "m1": "گر ایدونک خوی پدر دارد اوی",
      "m2": "همه بوم زیر و زبر دارد اوی",
      "verse_number": 20
    },
    {
      "id": "272eb555-cc75-430d-87c2-d50953f4be79",
      "m1": "نه موبد بود شاد و نه پهلوان",
      "m2": "نه او در جهان شاد روشنروان",
      "verse_number": 21
    },
    {
      "id": "005a4b16-f06a-4d5e-a484-fd79c32d7113",
      "m1": "همه موبدان نزد شاه آمدند",
      "m2": "گشادهدل و نیکخواه آمدند",
      "verse_number": 22
    },
    {
      "id": "0c2df8ff-4847-43d3-b61e-51a25a106f9e",
      "m1": "بگفتند کاین کودک برمنش",
      "m2": "ز بیغاره دورست و ز سرزنش",
      "verse_number": 23
    },
    {
      "id": "95ace60e-6045-4f50-8606-792176127e0b",
      "m1": "جهان سربسر زیر فرمان اوست",
      "m2": "به هر کشوری باژ و پیمان اوست",
      "verse_number": 24
    },
    {
      "id": "65f2f8dc-9cba-4d98-b9ad-a1c98ea2434f",
      "m1": "نگه کن به جایی که دانش بود",
      "m2": "ز داننده کشور به رامش بود",
      "verse_number": 25
    },
    {
      "id": "a09562e1-f3ef-403d-9baf-cbecdb1710e5",
      "m1": "ز پرمایگان دایگانی گزین",
      "m2": "که باشد ز کشور برو آفرین",
      "verse_number": 26
    },
    {
      "id": "180fbc40-8d08-4ca3-ba74-8be9abe91b08",
      "m1": "هنر گیرد این شاه خرم نهان",
      "m2": "ز فرمان او شاد گردد جهان",
      "verse_number": 27
    },
    {
      "id": "360a4600-8be2-470d-ad7e-d4eeb7999a09",
      "m1": "چو بشنید زان موبدان یزدگرد",
      "m2": "ز کشور فرستادگان کرد گرد",
      "verse_number": 28
    },
    {
      "id": "4bf8fc14-641a-402c-8665-2141e37ab6bc",
      "m1": "همانگه فرستاد کسها به روم",
      "m2": "به هند و به چین و به آباد بوم",
      "verse_number": 29
    },
    {
      "id": "6753b656-6cbc-4bcc-a7c2-c44ed44d5fa0",
      "m1": "همان نامداری سوی تازیان",
      "m2": "بشد تا ببیند به سود و زیان",
      "verse_number": 30
    },
    {
      "id": "0d62df53-3dbf-4554-baa0-2bb77fff9c5b",
      "m1": "به هر سو همی رفت خوانندهای",
      "m2": "که بهرام را پرورانندهای",
      "verse_number": 31
    },
    {
      "id": "0f067341-b44a-4d87-a809-7ca7bfbce908",
      "m1": "بجوید سخنگوی و دانشپذیر",
      "m2": "سخندان و هر دانشی یادگیر",
      "verse_number": 32
    },
    {
      "id": "f8b80e9e-d474-437f-b1c0-06da9895e9df",
      "m1": "بیامد ز هر کشوری موبدی",
      "m2": "جهاندیده و نیکپی بخردی",
      "verse_number": 33
    },
    {
      "id": "b6739ffe-8cb7-44b7-8a88-9c9323415466",
      "m1": "چو یکسر بدان بارگاه آمدند",
      "m2": "پژوهنده نزدیک شاه آمدند",
      "verse_number": 34
    },
    {
      "id": "7fb75b27-b0ac-4be2-8b41-05768d33027d",
      "m1": "بپرسید بسیار و بنواختشان",
      "m2": "به هر برزنی جایگه ساختشان",
      "verse_number": 35
    },
    {
      "id": "439d9f02-1599-422f-8a94-ac3edac7646b",
      "m1": "برفتند نعمان و منذر به شب",
      "m2": "بسی نامداران گرد از عرب",
      "verse_number": 36
    },
    {
      "id": "c3805c49-8ab0-456e-aefe-849a8fdec7a8",
      "m1": "بزرگان چو در پارس گرد آمدند",
      "m2": "بر تاجور یزدگرد آمدند",
      "verse_number": 37
    },
    {
      "id": "5dc3ac0a-0386-4993-993e-1ec5220c9f04",
      "m1": "همی گفت هرکس که ما بندهایم",
      "m2": "سخن بشنویم و سرایندهایم",
      "verse_number": 38
    },
    {
      "id": "38e1f9c1-dece-493c-b5a8-915da0b5b157",
      "m1": "که باید چنین روزگار از مهان",
      "m2": "که بایسته فرزند شاه جهان",
      "verse_number": 39
    },
    {
      "id": "a67c8ecd-9bba-41e3-8c20-d99ebb741ad0",
      "m1": "به بر گیرد و دانش آموزدش",
      "m2": "دل از تیرگیها بیفروزدش",
      "verse_number": 40
    },
    {
      "id": "ab7e9296-e735-4197-acb8-05c3ca10d55f",
      "m1": "ز رومی و هندی و از پارسی",
      "m2": "نجومی و گر مردم هندسی",
      "verse_number": 41
    },
    {
      "id": "653da3e1-e839-4fef-8b11-7ef1830dc1b2",
      "m1": "همه فیلسوفان بسیاردان",
      "m2": "سخنگوی وز مردم کاردان",
      "verse_number": 42
    },
    {
      "id": "38ae0202-2b18-43d9-adb7-61ebd2a34fe9",
      "m1": "بگفتند هریک به آواز نرم",
      "m2": "که ای شاه باداد و با رای و شرم",
      "verse_number": 43
    },
    {
      "id": "ccee1c33-4f5c-4fbc-be7d-78b44105ff63",
      "m1": "همه سربسر خاک پای توایم",
      "m2": "به دانش همه رهنمای توایم",
      "verse_number": 44
    },
    {
      "id": "86ada6d6-f317-4b5b-82a5-6c9dc95945b7",
      "m1": "نگر تا پسندت که آید همی",
      "m2": "وگر سودمندت که آید همی",
      "verse_number": 45
    },
    {
      "id": "b6b22973-838f-4e6e-bf16-e1d5d3f34f62",
      "m1": "چنین گفت منذر که ما بندهایم",
      "m2": "خود اندر جهان شاه را زندهایم",
      "verse_number": 46
    },
    {
      "id": "baf8331d-fc1d-4b79-9668-591783c389d3",
      "m1": "هنرهای ما شاه داند همه",
      "m2": "که او چون شبانست و ما چون رمه",
      "verse_number": 47
    },
    {
      "id": "374c864a-ac15-4df8-8665-de05600c3af2",
      "m1": "سواریم و گردیم و اسپ افگنیم",
      "m2": "کسی را که دانا بود بشکنیم",
      "verse_number": 48
    },
    {
      "id": "c3b5c4be-97ef-40f4-bf3b-53f480519565",
      "m1": "ستارهشمر نیست چون ما کسی",
      "m2": "که از هندسه بهره دارد بسی",
      "verse_number": 49
    },
    {
      "id": "c500037d-59a3-4a8a-a45e-2fb4d8af20b7",
      "m1": "پر از مهر شاهست ما را روان",
      "m2": "به زیر اندرون تازی اسپان دمان",
      "verse_number": 50
    },
    {
      "id": "3ad2cb41-bf9b-4a4c-adf2-41fb60b01235",
      "m1": "همه پیش فرزند تو بندهایم",
      "m2": "بزرگی وی را ستایندهایم",
      "verse_number": 51
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 51
  }
}