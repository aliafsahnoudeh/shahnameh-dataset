{
  "id": "212f7c13-1ec0-4020-9146-2128bae4c184",
  "title": "بخش ۱۲",
  "verses": [
    {
      "id": "96f22388-0cff-46b7-80ae-bec241aba903",
      "m1": "چو ایرانیان آگهی یافتند",
      "m2": "یکایک سوی چاره بشتافتند",
      "verse_number": 1
    },
    {
      "id": "dca1b1ef-e7d9-48b3-8c31-8f1b3ab40829",
      "m1": "چو گشتند زان رنج یکسر ستوه",
      "m2": "نشستند یک با دگر همگروه",
      "verse_number": 2
    },
    {
      "id": "a055fde1-80cb-4556-86ce-c7d9049013c8",
      "m1": "که این کار ز اندازه اندر گذشت",
      "m2": "ز روم و ز هند و سواران دشت",
      "verse_number": 3
    },
    {
      "id": "22d38cf2-efc7-4b98-97b6-72aee71f4d10",
      "m1": "یکی چاره باید کنون ساختن",
      "m2": "دل و جان ازین کار پرداختن",
      "verse_number": 4
    },
    {
      "id": "5e45d4cb-debf-4096-87bf-548b1ac6d7ee",
      "m1": "بجستند موبد فرستادهای",
      "m2": "سخنگوی و بینادل آزادهای",
      "verse_number": 5
    },
    {
      "id": "a338cb28-fba4-4c7f-817d-79f4daf3c234",
      "m1": "کجا نام آن گو جوانوی بود",
      "m2": "دبیری بزرگ و سخنگوی بود",
      "verse_number": 6
    },
    {
      "id": "5c43a841-4138-47c5-85ab-d7eaab2b8c81",
      "m1": "بدان تا به نزدیک منذر شود",
      "m2": "سخن گوید و گفت او بشنود",
      "verse_number": 7
    },
    {
      "id": "1d338a5f-22c0-4f3e-a2a2-576a67775f95",
      "m1": "به منذر بگوید که ای سرفراز",
      "m2": "جهان را به نام تو بادا نیاز",
      "verse_number": 8
    },
    {
      "id": "f2475328-6ec4-4ac0-b4d8-f9b468bd397d",
      "m1": "نگهدار ایران نیران توی",
      "m2": "به هر جای پشت دلیران توی",
      "verse_number": 9
    },
    {
      "id": "839fa857-c147-4a6a-9e6e-452d123e848a",
      "m1": "چو این تخت بیشاه و بیتاج شد",
      "m2": "ز خون مرز چون پر دراج شد",
      "verse_number": 10
    },
    {
      "id": "9248526c-9faf-4a1c-b415-fc76d3093bdd",
      "m1": "تو گفتیم باشی خداوند مرز",
      "m2": "که این مرز را از تو دیدیم ارز",
      "verse_number": 11
    },
    {
      "id": "ad5d55fe-5075-434c-8bba-d3b4a4c677bf",
      "m1": "کنون غارت از تست و خون ریختن",
      "m2": "به هر جای تاراج و آویختن",
      "verse_number": 12
    },
    {
      "id": "524831ee-be1f-406a-9a30-703789d5d5b2",
      "m1": "نبودی ازین پیش تو بدکنش",
      "m2": "ز نفرین بترسیدی و سرزنش",
      "verse_number": 13
    },
    {
      "id": "36af3168-8479-46f9-9bc5-00a1f0f8f9b6",
      "m1": "نگه کن بدین تا پسند آیدت",
      "m2": "به پیران سر این سودمند آیدت",
      "verse_number": 14
    },
    {
      "id": "4d9a96e1-6d06-4e47-ae91-59e482c3ccff",
      "m1": "جز از تو زبر داوری دیگرست",
      "m2": "کز اندیشهٔ برتران برترست",
      "verse_number": 15
    },
    {
      "id": "0a0ae311-3259-4940-9079-c0ad5a7f2450",
      "m1": "بگوید فرستاده چیزی که دید",
      "m2": "سخن نیز کز کاردانان شنید",
      "verse_number": 16
    },
    {
      "id": "a1ebdef2-bd16-4579-8748-f14aff2b3e37",
      "m1": "جوانوی دانا ز پیش سران",
      "m2": "بیامد سوی دشت نیزهوران",
      "verse_number": 17
    },
    {
      "id": "0477c079-822b-4ff7-aa5b-b98a59b370a7",
      "m1": "به منذر سخن گفت و نامه بداد",
      "m2": "سخنهای ایرانیان کرد یاد",
      "verse_number": 18
    },
    {
      "id": "d9b1b255-8fb9-4d8c-b044-cbdc499ae468",
      "m1": "سخنهایش بشنید شاه عرب",
      "m2": "به پاسخ برو هیچ نگشاد لب",
      "verse_number": 19
    },
    {
      "id": "dc7a7aed-320a-45b9-9b8b-c9e0d241da71",
      "m1": "چنین گفت کای دانشی چارهجوی",
      "m2": "سخن زین نشان با شهنشاه گوی",
      "verse_number": 20
    },
    {
      "id": "0ae88838-8548-4d53-a197-75eed3fb8015",
      "m1": "بگوی این که گفتی به بهرامشاه",
      "m2": "چو پاسخ بجویی نمایدت راه",
      "verse_number": 21
    },
    {
      "id": "cd4b8b8d-861a-471b-920e-e1230a2d1633",
      "m1": "فرستاد با او یکی نامدار",
      "m2": "جوانوی شد تا در شهریار",
      "verse_number": 22
    },
    {
      "id": "35a77b7a-e0fa-442b-8f16-bc92f1d3190b",
      "m1": "چو بهرام را دید داننده مرد",
      "m2": "برو آفریننده را یاد کرد",
      "verse_number": 23
    },
    {
      "id": "cc80c977-6750-4db4-be79-4ac85ee39c26",
      "m1": "ازان برز و بالا و آن یال و کفت",
      "m2": "فروماند بینادل اندر شگفت",
      "verse_number": 24
    },
    {
      "id": "bfcfdee4-4543-4ac3-a60c-bccf392198c4",
      "m1": "همی می چکد گویی از روی اوی",
      "m2": "همی بوی مشک آید از موی اوی",
      "verse_number": 25
    },
    {
      "id": "1dbef4b2-ea29-4e6a-bc6a-3ed0fa27976f",
      "m1": "سخنگوی بیفر و بیهوش گشت",
      "m2": "پیامش سراسر فراموش گشت",
      "verse_number": 26
    },
    {
      "id": "ab9b1d42-fc85-404c-aae7-82de8d6ba5c9",
      "m1": "بدانست بهرام کو خیره شد",
      "m2": "ز دیدار چشم و دلش تیره شد",
      "verse_number": 27
    },
    {
      "id": "eb64235d-994c-48ee-baa4-ce1ae3de04ac",
      "m1": "بپرسید بسیار و بنواختش",
      "m2": "به خوبی بر تخت بنشاختش",
      "verse_number": 28
    },
    {
      "id": "25d84d66-9f42-44c0-b471-5c23930003c1",
      "m1": "چو گستاخ شد زو بپرسید شاه",
      "m2": "کز ایران چرا رنجه گشتی به راه",
      "verse_number": 29
    },
    {
      "id": "7cad5e53-4a5d-4013-a45d-5d4b687c66b0",
      "m1": "فرستاد با او یکی پرخرد",
      "m2": "که او را به نزدیک منذر برد",
      "verse_number": 30
    },
    {
      "id": "3ca24836-09c8-43e4-bf9a-da1d93d61737",
      "m1": "بگوید که آن نامه پاسخ نویس",
      "m2": "به پاسخ سخنهای فرخ نویس",
      "verse_number": 31
    },
    {
      "id": "608fdb31-b414-47d9-9b7a-f858ab99ac4e",
      "m1": "وزان پس نگر تا چه دارد پیام",
      "m2": "ازو بشنود پاسخ او تمام",
      "verse_number": 32
    },
    {
      "id": "138f96df-3029-42b4-9449-7fefff671cb3",
      "m1": "بیامد جوانو سخنها بگفت",
      "m2": "رخ منذر از رای او برشکفت",
      "verse_number": 33
    },
    {
      "id": "b41284a8-95d7-4e29-8594-cbfea11231e7",
      "m1": "چو بشنید زان مرد بنا سخن",
      "m2": "مر آن نامه را پاسخ افگند بن",
      "verse_number": 34
    },
    {
      "id": "d9917a1e-ca3a-45ac-9f9a-a5fc38103485",
      "m1": "جوانوی را گفت کای پرخرد",
      "m2": "هرانکس که بد کرد کیفر برد",
      "verse_number": 35
    },
    {
      "id": "8989918b-f85a-48b9-9188-ff76c72eddae",
      "m1": "شنیدم همه هرچ دادی پیام",
      "m2": "وزان نامداران که کردی سلام",
      "verse_number": 36
    },
    {
      "id": "e8452146-39bd-4474-ada2-65f39549b2e6",
      "m1": "چنین گوی کاین بد که کرد از نخست",
      "m2": "که بیهوده پیکار بایست جست",
      "verse_number": 37
    },
    {
      "id": "246469d8-29d6-4a20-8467-2c8abf9963b6",
      "m1": "شهنشاه بهرام گور ایدرست",
      "m2": "که با فر و برزست و با لشکرست",
      "verse_number": 38
    },
    {
      "id": "d9dcbcb3-c6a7-43a6-92ff-e8d4bc541d27",
      "m1": "ز سوراخ چون مار بیرون کشید",
      "m2": "همی دامن خویش در خون کشید",
      "verse_number": 39
    },
    {
      "id": "906a2caa-6156-4b21-87f1-e4829fc707a2",
      "m1": "گر ایدونک من بودمی رای زن",
      "m2": "به ایرانیان بر نبودی شکن",
      "verse_number": 40
    },
    {
      "id": "cf51b925-c688-49f5-ae0e-796808f5e89f",
      "m1": "جوانوی روی شهنشاه دید",
      "m2": "وزو نیز چندی سخنها شنید",
      "verse_number": 41
    },
    {
      "id": "c3d27fce-2704-4d72-9329-f106c75fa34c",
      "m1": "بپرسید تا شاید او تخت را",
      "m2": "بزرگی و پیروزی و بخت را",
      "verse_number": 42
    },
    {
      "id": "38eb15dc-4c35-492e-959e-6a5c3fd8471d",
      "m1": "ز منذر چو بشنید زانسان سخن",
      "m2": "یکی روشن اندیشه افگند بن",
      "verse_number": 43
    },
    {
      "id": "d58e78a6-ab69-473f-bc33-68f64218fb7f",
      "m1": "چنین داد پاسخ که ای سرفراز",
      "m2": "به دانایی از هرکسی بینیاز",
      "verse_number": 44
    },
    {
      "id": "9601c881-36b7-4c2a-b187-0e570158362f",
      "m1": "از ایرانیان گر خرد گشته شد",
      "m2": "فراوان از آزادگان کشته شد",
      "verse_number": 45
    },
    {
      "id": "30b9df3e-157c-4c96-b34a-3df6215b47f5",
      "m1": "کنون من یکی نامجویم کهن",
      "m2": "اگر بشنوی تا بگویم سخن",
      "verse_number": 46
    },
    {
      "id": "fb553c29-6d36-4d79-84dd-134930530770",
      "m1": "ترا با شهنشاه بهرام گور",
      "m2": "خرامید باید ابی جنگ و شور",
      "verse_number": 47
    },
    {
      "id": "4f62ed55-a1b6-4573-b736-0ecfe74a3d67",
      "m1": "به ایران زمین در ابا یوز و باز",
      "m2": "چنانچون بود شاه گردنفراز",
      "verse_number": 48
    },
    {
      "id": "2bc0a5d0-2ad9-47c6-b3b3-8bc2c095f1b9",
      "m1": "شنیدن سخنهای ایرانیان",
      "m2": "همانا ز جنبش نباید زیان",
      "verse_number": 49
    },
    {
      "id": "e9250a82-a86c-4167-bf62-fdbd269d685d",
      "m1": "بگویی تو نیز آنچ اندرخورد",
      "m2": "خردمندی و دوری از بیخرد",
      "verse_number": 50
    },
    {
      "id": "00053571-547e-4a82-b481-df5be59bed05",
      "m1": "ز رای بدان دور داری منش",
      "m2": "بپیچی ز بیغاره و سرزنش",
      "verse_number": 51
    },
    {
      "id": "1eecd34f-9a7a-42a9-aec5-0049a9790e11",
      "m1": "چو بشنید منذر ورا هدیه داد",
      "m2": "کسی کردش از شهر آباد شاد",
      "verse_number": 52
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 52
  },
  "order_in_parent": 12
}