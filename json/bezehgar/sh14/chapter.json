{
  "id": "3f9b0d54-ceb6-4af8-be4f-16814b399fba",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "31e13064-2d58-46f9-9794-08ff3a7770d7",
      "m1": "چنین گفت بهرام کای مهتران",
      "m2": "جهاندیده و سالخورده سران",
      "verse_number": 1
    },
    {
      "id": "5e5c7fe8-3cb5-4f95-afae-26da28911190",
      "m1": "پدر بر پدر پادشاهی مراست",
      "m2": "چرا بخشش اکنون برای شماست",
      "verse_number": 2
    },
    {
      "id": "74e00193-1604-4f08-b6ed-35e8b275b2b8",
      "m1": "به آواز گفتند ایرانیان",
      "m2": "که ما را شکیبا مکن بر زیان",
      "verse_number": 3
    },
    {
      "id": "71ee9ad7-8a31-4394-90b4-0b7133d327cc",
      "m1": "نخواهیم یکسر به شاهی ترا",
      "m2": "بر و بوم ما را سپاهی ترا",
      "verse_number": 4
    },
    {
      "id": "f7abbe87-63ff-4783-99aa-91fe4ef9813e",
      "m1": "کزین تخمه پرداغ و دودیم و درد",
      "m2": "شب و روز با پیچش و باد سرد",
      "verse_number": 5
    },
    {
      "id": "f8145351-143c-4866-bcc8-93e5275fef6a",
      "m1": "چنین گفت بهرام کری رواست",
      "m2": "هوا بر دل هرکسی پادشاست",
      "verse_number": 6
    },
    {
      "id": "7e3fd436-004f-494f-8bd0-7619ba75f4fb",
      "m1": "مرا گر نخواهید بیرای من",
      "m2": "چرا کس نشانید بر جای من",
      "verse_number": 7
    },
    {
      "id": "3f947cf5-e988-416a-af60-173f587fd167",
      "m1": "چنین گفت موبد که از راه داد",
      "m2": "نه خسرو گریزد نه کهتر نژاد",
      "verse_number": 8
    },
    {
      "id": "c2ce59c3-2f6d-4448-a8cb-1968e80390fe",
      "m1": "تو از ما یکی باش و شاهی گزین",
      "m2": "که خوانند هرکس برو آفرین",
      "verse_number": 9
    },
    {
      "id": "ace91732-ba9a-4bad-adbc-c7fcd692864b",
      "m1": "سه روز اندران کار شد روزگار",
      "m2": "که جویند ز ایران یکی شهریار",
      "verse_number": 10
    },
    {
      "id": "289b8c95-f50e-459d-af34-f5493131c599",
      "m1": "نوشتند پس نام صد نامور",
      "m2": "فروزندهٔ تاج و تخت و کمر",
      "verse_number": 11
    },
    {
      "id": "457f69d1-0332-4f0e-90f3-6a51e91b5067",
      "m1": "ازان صد یکی نام بهرام بود",
      "m2": "که در پادشاهی دلارام بود",
      "verse_number": 12
    },
    {
      "id": "4c07e999-3ca9-4a6c-b83e-b6c889c32da1",
      "m1": "ازین صد به پنجاه بازآمدند",
      "m2": "پر از چاره و پرنیاز آمدند",
      "verse_number": 13
    },
    {
      "id": "4e7af61c-e4d2-49b4-a71c-dd312612f014",
      "m1": "ز پنجاه بهرام بود از نخست",
      "m2": "اگر جست پای پدر گر نجست",
      "verse_number": 14
    },
    {
      "id": "ef8528fd-c2f9-4ba1-9266-503263e1bd5d",
      "m1": "ز پنجاه بازآوریدند سی",
      "m2": "ز ایرانی و رومی و پارسی",
      "verse_number": 15
    },
    {
      "id": "39524456-8fb8-4243-88ec-9a706c3f9f44",
      "m1": "ز سی نیز بهرام بد پیش رو",
      "m2": "که هم تاجور بود و هم شیر نو",
      "verse_number": 16
    },
    {
      "id": "7f2c6f05-2ffd-402f-aa2e-09425d4a7713",
      "m1": "ز سی کرد داننده موبد چهار",
      "m2": "وزین چار بهرام بد شهریار",
      "verse_number": 17
    },
    {
      "id": "a6684816-3e10-472f-bfbc-2084ba643182",
      "m1": "چو تنگ اندرآمد ز شاهی سخن",
      "m2": "ز ایرانیان هرک او بد کهن",
      "verse_number": 18
    },
    {
      "id": "5ad5e638-0460-45a2-bedc-a941d593e4a8",
      "m1": "نخواهیم گفتند بهرام را",
      "m2": "دلیر و سبکسار و خودکام را",
      "verse_number": 19
    },
    {
      "id": "c4e39ffe-94d2-4c93-90c8-7b3d6b635ff0",
      "m1": "خروشی برآمد میان سران",
      "m2": "دل هرکسی تیز گشت اندران",
      "verse_number": 20
    },
    {
      "id": "2f669a61-5e42-40fe-99e6-0f643e85e6c7",
      "m1": "چنین گفت منذر به ایرانیان",
      "m2": "که خواهم که دانم به سود و زیان",
      "verse_number": 21
    },
    {
      "id": "42962112-e6c5-420b-8fe8-2d130f97856d",
      "m1": "کزین سال ناخورده شاه جوان",
      "m2": "چرایید پر درد و تیرهروان",
      "verse_number": 22
    },
    {
      "id": "2fb8cad6-f7fc-494e-91ab-d58ff1a018b5",
      "m1": "بزرگان به پاسخ بیاراستند",
      "m2": "بسی خسته دل پارسی خواستند",
      "verse_number": 23
    },
    {
      "id": "5c4ce79c-c30a-44e8-bd96-38ffd123eb71",
      "m1": "ز ایران کرا خسته بد یزدگرد",
      "m2": "یکایک بران دشت کردند گرد",
      "verse_number": 24
    },
    {
      "id": "f33dc94f-1256-4921-a2ac-b063598344bc",
      "m1": "بریده یکی را دو دست و دو پای",
      "m2": "یکی مانده بر جای و جانش به جای",
      "verse_number": 25
    },
    {
      "id": "c7d1c88a-5fcd-4403-a84d-889f05d65e9d",
      "m1": "یکی را دو دست و دو گوش و زبان",
      "m2": "بریده شده چون تن بیروان",
      "verse_number": 26
    },
    {
      "id": "36ef3dff-5b37-4c0e-9539-a9e50463d824",
      "m1": "یکی را ز تن دور کرده دو کفت",
      "m2": "ازان مردمان ماند منذر شگفت",
      "verse_number": 27
    },
    {
      "id": "a0edd29d-21f8-4f1c-b0ad-286ab37fd0c4",
      "m1": "یکی را به مسمار کنده دو چشم",
      "m2": "چو منذر بدید آن برآورد خشم",
      "verse_number": 28
    },
    {
      "id": "cb6023e6-fff6-4506-948f-28105724af6f",
      "m1": "غمی گشت زان کار بهرام سخت",
      "m2": "به خاک پدر گفت کای شوربخت",
      "verse_number": 29
    },
    {
      "id": "a1d54dac-d56f-414b-8286-236650220694",
      "m1": "اگر چشم شادیت بر دوختی",
      "m2": "روان را به آتش چرا سوختی",
      "verse_number": 30
    },
    {
      "id": "023e13a1-2a78-4db1-aca6-62affb172db5",
      "m1": "جهانجوی منذر به بهرام گفت",
      "m2": "که این بد بریشان نباید نهفت",
      "verse_number": 31
    },
    {
      "id": "f8704f5d-8833-4527-9f04-8b6eefe26ede",
      "m1": "سخنها شنیدی تو پاسخگزار",
      "m2": "که تندی نه خوب آید از شهریار",
      "verse_number": 32
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 32
  }
}