{
  "id": "dc0513e8-3414-4bea-bfc4-b01ccfe0fc2f",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "226dcbbe-5b4b-440c-9b73-b8eea3fec18e",
      "m1": "پس آگاهی آمد به نزد گراز",
      "m2": "که زو بود خسرو به گرم و گداز",
      "verse_number": 1
    },
    {
      "id": "fd03c851-9eba-4f73-98fc-c93ed86d265b",
      "m1": "فرستاد گویندهای را ز روم",
      "m2": "که در خاک شد تاج شیروی شوم",
      "verse_number": 2
    },
    {
      "id": "33143d7e-cf22-4e8e-8d6b-7da7884101fe",
      "m1": "که جانش به دوزخ گرفتار باد",
      "m2": "سر دخمهٔ او نگون سار باد",
      "verse_number": 3
    },
    {
      "id": "eb4028f3-9297-4df5-8715-684c4e8df2c3",
      "m1": "که دانست هرگز که سرو بلند",
      "m2": "به باغ از گیا یافت خواهد گزند",
      "verse_number": 4
    },
    {
      "id": "dbd4225b-3518-446a-aa33-cbc78a9699be",
      "m1": "چو خسرو که چشم و دل روزگار",
      "m2": "نبیند چنو نیز یک شهریار",
      "verse_number": 5
    },
    {
      "id": "42703fc0-38f9-4a38-b9bd-76dd48cef8f0",
      "m1": "چو شیروی را شهریاری دهد",
      "m2": "همه شهر ایران به خواری دهد",
      "verse_number": 6
    },
    {
      "id": "5944c43e-9f62-4724-b797-7ca3212c3ec3",
      "m1": "چنو رفت شد تاجدار اردشیر",
      "m2": "بدو شادمان جان برنا و پیر",
      "verse_number": 7
    },
    {
      "id": "031eec91-8b9e-46a8-bd9e-5c4d939febfa",
      "m1": "مرا گر ز ایران رسد هیچ بهر",
      "m2": "نخواهم که بر وی رسد باد شهر",
      "verse_number": 8
    },
    {
      "id": "3109c263-810e-42e9-9702-5b3a5a9501f0",
      "m1": "نبودم من آگه که پرویز شاه",
      "m2": "به گفتار آن بدتنان شد تباه",
      "verse_number": 9
    },
    {
      "id": "0d50cda6-821e-4235-a048-cfa0d792edd0",
      "m1": "بیایم کنون با سپاهی گران",
      "m2": "ز روم و ز ایران گزیده سران",
      "verse_number": 10
    },
    {
      "id": "b2057ad1-94a5-43b1-be31-0066c6d40de4",
      "m1": "ببینیم تا کیست این کدخدای",
      "m2": "که باشد پسندش بدین گونه رای",
      "verse_number": 11
    },
    {
      "id": "67ba9c19-020c-43ae-b87b-6f7cbc7872eb",
      "m1": "چنان برکنم بیخ او را ز بن",
      "m2": "کزان پس نراند ز شاهی سخن",
      "verse_number": 12
    },
    {
      "id": "da0ab155-bd9c-466c-8073-f21eb5b384d8",
      "m1": "نوندی برافگند پویان به راه",
      "m2": "به نزدیک پیران ایران سپاه",
      "verse_number": 13
    },
    {
      "id": "09e4f7aa-5fdd-483e-996d-ad6bed157d47",
      "m1": "دگرگونه آهنگ بدکامه کرد",
      "m2": "به پیروز خسرو یکی نامه کرد",
      "verse_number": 14
    },
    {
      "id": "42ac9599-06e0-42f9-9a51-db0f9e249b7b",
      "m1": "که شد تیره این تخت ساسانیان",
      "m2": "جهانجوی باید که بندد میان",
      "verse_number": 15
    },
    {
      "id": "45c4d184-cdc7-4086-953f-3601e94fc1aa",
      "m1": "توانی مگر چارهای ساختن",
      "m2": "ز هرگونه اندیشه انداختن",
      "verse_number": 16
    },
    {
      "id": "411ae82f-9c57-4ae4-8bec-9a9cdadfc582",
      "m1": "بجویی بسی یار برنا و پیر",
      "m2": "جهان را بپردازی از اردشیر",
      "verse_number": 17
    },
    {
      "id": "db289d9f-0477-4d56-aa3f-6f44f0ae4081",
      "m1": "ازان پس بیابی همه کام خویش",
      "m2": "شوی ایمن و شاد زارام خویش",
      "verse_number": 18
    },
    {
      "id": "377a858c-fd21-4694-844e-07f36518db39",
      "m1": "گر ایدون که این راز بیرون دهی",
      "m2": "همی خنجر کینه را خون دهی",
      "verse_number": 19
    },
    {
      "id": "c1df229e-446c-42e9-9dd0-ed74df2400e4",
      "m1": "من از روم چندان سپاه آورم",
      "m2": "که گیتی به چشمت سیاه آورم",
      "verse_number": 20
    },
    {
      "id": "99cb25fa-3486-483f-ab96-00cc63d18f13",
      "m1": "به ژرفی نگهدار گفتار من",
      "m2": "مبادا که خوار آیدت کار من",
      "verse_number": 21
    },
    {
      "id": "2b5825f0-5991-4b2f-a728-0e0df1936b1e",
      "m1": "چو پیروز خسرو چنان نامه دید",
      "m2": "همه پیش و پس رای خودکامه دید",
      "verse_number": 22
    },
    {
      "id": "9c38846e-f2c5-43da-976d-e20890ebfeda",
      "m1": "دل روشن نامور شد تباه",
      "m2": "که تا چون کند بد بدان زادشاه",
      "verse_number": 23
    },
    {
      "id": "d974791a-5528-4cfd-8fc9-5fe6e4867618",
      "m1": "ورا خواندی هر زمان اردشیر",
      "m2": "که گوینده مردی بد و یادگیر",
      "verse_number": 24
    },
    {
      "id": "5167e7a0-d812-4277-af18-bd34ea470340",
      "m1": "برآسای دستور بودی ورا",
      "m2": "همان نیز گنجور بودی ورا",
      "verse_number": 25
    },
    {
      "id": "7e7c6eb2-5a0f-4f9a-a72e-3f5e37033057",
      "m1": "بیامد شبی تیره گون بار یافت",
      "m2": "می روشن و چرب گفتار یافت",
      "verse_number": 26
    },
    {
      "id": "c4de63f8-eb94-4ba7-b3d9-045f23dbe869",
      "m1": "نشسته به ایوان خویش اردشیر",
      "m2": "تنی چند با او ز برنا و پیر",
      "verse_number": 27
    },
    {
      "id": "93973c2f-8226-4acd-ab2d-86f4e8d3a336",
      "m1": "چو پیروز خسرو بیامد برش",
      "m2": "تو گفتی ز گردون برآمد سرش",
      "verse_number": 28
    },
    {
      "id": "b6b7e2ee-2a7d-4474-98d8-a979dbc0435c",
      "m1": "بفرمود تا برکشیدند رود",
      "m2": "شد ایوان پر از بانگ رود و سرود",
      "verse_number": 29
    },
    {
      "id": "5a0465f4-c8ed-45c3-83c6-76d4313c28ef",
      "m1": "چو نیمی شب تیره اندرکشید",
      "m2": "سپهبد می یک منی در کشید",
      "verse_number": 30
    },
    {
      "id": "d2e30bdb-79b8-4358-bb93-472ffddc87ea",
      "m1": "شده مست یاران شاه اردشیر",
      "m2": "نماند ایچ رامشگر و یادگیر",
      "verse_number": 31
    },
    {
      "id": "47219669-3d1e-4c8c-9dc2-934ff97881d3",
      "m1": "بد اندیش یاران او را براند",
      "m2": "جز از شاه و پیروز خسرو نماند",
      "verse_number": 32
    },
    {
      "id": "d6f45d63-9c60-4323-8b56-fee3e1a7421f",
      "m1": "جفا پیشه از پیش خانه بجست",
      "m2": "لب شاه بگرفت ناگه به دست",
      "verse_number": 33
    },
    {
      "id": "f21c399e-ee3f-4441-a76c-f60ae8557188",
      "m1": "همیداشت تا شد تباه اردشیر",
      "m2": "همه کاخ شد پر ز شمشیر و تیر",
      "verse_number": 34
    },
    {
      "id": "be8346e9-f2b7-44f8-ad80-6fee57c7591a",
      "m1": "همه یار پیروز خسرو شدند",
      "m2": "اگر نو جهانجوی اگر گو بدند",
      "verse_number": 35
    },
    {
      "id": "ffec7000-b435-41d6-889d-97a882cb6a6d",
      "m1": "هیونی برافگند نزد گراز",
      "m2": "یکی نامهای نیز با آن دراز",
      "verse_number": 36
    },
    {
      "id": "db13336a-2705-47d2-aac8-098bb6550705",
      "m1": "فرستاده چون شد به نزدیک او",
      "m2": "چو خورشید شد جان تاریک اوی",
      "verse_number": 37
    },
    {
      "id": "ef63e0a7-a847-4b51-a85a-e7dcaf5b0ec5",
      "m1": "بیاورد زان بوم چندان سپاه",
      "m2": "که بر مور و بر پشه بر بست راه",
      "verse_number": 38
    },
    {
      "id": "2a0507c4-44da-4fac-89dd-cb4e81c63820",
      "m1": "همیتاخت چون باد تا طیسفون",
      "m2": "سپاهش همه دست شسته به خون",
      "verse_number": 39
    },
    {
      "id": "fae5c8c4-7a43-4373-b6e0-90b3bc4c15d5",
      "m1": "ز لشکر نیارست دم زد کسی",
      "m2": "نبد خود دران شهر مردم بسی",
      "verse_number": 40
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 40
  }
}