{
  "id": "04f8aea3-b761-421f-879c-b3f564e39557",
  "title": "پادشاهی نرسی بهرام",
  "verses": [
    {
      "id": "fff7bccc-cfb2-426f-8b41-113b30b3ad13",
      "m1": "چو نرسی نشست از بر تخت عاج",
      "m2": "به سر بر نهاد آن سزاوار تاج",
      "verse_number": 1
    },
    {
      "id": "3dccb129-d88d-416b-b609-fe8a0a2aaf64",
      "m1": "همه مهتران با نثار آمدند",
      "m2": "ز درد پدر سوکوار آمدند",
      "verse_number": 2
    },
    {
      "id": "70e5a34a-9f92-4084-b8d3-aba82c5867fc",
      "m1": "بریشان سپهدار کرد آفرین",
      "m2": "که ای مهربانان باداد و دین",
      "verse_number": 3
    },
    {
      "id": "528f12be-96a5-4418-a65c-aac534ca866f",
      "m1": "بدانید کز کردگار جهان",
      "m2": "چنین رفت کار آشکار و نهان",
      "verse_number": 4
    },
    {
      "id": "88e9e93e-1f51-4f97-9e50-ee87d3760e86",
      "m1": "که ما را فزونی خرد داد و شرم",
      "m2": "جوانمردی و داد و آواز نرم",
      "verse_number": 5
    },
    {
      "id": "de44f0cf-7a3f-4a36-9201-9f76787d7899",
      "m1": "همان ایمنی شادمانی بود",
      "m2": "کرا ز اخترش مهربانی بود",
      "verse_number": 6
    },
    {
      "id": "aa088bdf-2110-485d-83f0-bad9230ec76e",
      "m1": "خردمند مرد ار ترا دوست گشت",
      "m2": "چنان دان که با تو ز یک پوست گشت",
      "verse_number": 7
    },
    {
      "id": "db1b033b-875a-413d-8735-28e2ed699dea",
      "m1": "تو کردار خوب از توانا شناس",
      "m2": "خرد نیز نزدیک دانا شناس",
      "verse_number": 8
    },
    {
      "id": "273a80a3-ef9b-41f4-82cc-1b85b0933191",
      "m1": "دلیری ز هشیار بودن بود",
      "m2": "دلاور به جای ستودن بود",
      "verse_number": 9
    },
    {
      "id": "8af86c75-23c7-4bbe-adbe-213f69bacb71",
      "m1": "هرانکس که بگریزد از کارکرد",
      "m2": "ازو دور شد نام و ننگ و نبرد",
      "verse_number": 10
    },
    {
      "id": "2f092cae-0796-4c03-abcc-92f5898b8bba",
      "m1": "همان کاهلی مردم از بددلیست",
      "m2": "همآواز آن بددلی کاهلیست",
      "verse_number": 11
    },
    {
      "id": "b08b3bbb-a3c7-4d47-8e41-dccd48ebb3b7",
      "m1": "همی زیست نه سال با رای و پند",
      "m2": "جهان را سخن گفتنش سودمند",
      "verse_number": 12
    },
    {
      "id": "7c0a5fb6-5b01-4e96-8fc8-abed01a61032",
      "m1": "چو روزش فراز آمد و بخت شوم",
      "m2": "شد آن ترگ پولاد بر سان موم",
      "verse_number": 13
    },
    {
      "id": "b5fb23ba-25ad-4b80-8fe9-dbddd32f8a0e",
      "m1": "دوان شد به بالینش شاه اورمزد",
      "m2": "به رخشانی لاله اندر فرزد",
      "verse_number": 14
    },
    {
      "id": "6b34564d-1592-4273-9c40-a9cad880a776",
      "m1": "که فرزند آن نامور شاه بود",
      "m2": "فرزوان چو در تیره شب ماه بود",
      "verse_number": 15
    },
    {
      "id": "ca857be5-f8ce-4dbf-be79-c927c350a80b",
      "m1": "بدو گفت کای نازدیده جوان",
      "m2": "مبر دست سوی بدی تا توان",
      "verse_number": 16
    },
    {
      "id": "c2f47271-463f-45f3-84ab-af66773047f2",
      "m1": "تو از جای بهرام و نرسی به بخت",
      "m2": "سزاوار تاجی و زیبای تخت",
      "verse_number": 17
    },
    {
      "id": "6a51daf1-96b6-428b-8050-a59e2e371313",
      "m1": "بدین زور و بالا و این فر و یال",
      "m2": "بهر دانش از هرکسی بیهمال",
      "verse_number": 18
    },
    {
      "id": "7200e8ec-c48a-477c-b27f-db98c372ad6f",
      "m1": "مبادا که تاج از تو گریان شود",
      "m2": "دل انجمن بر تو بریان شود",
      "verse_number": 19
    },
    {
      "id": "a3954375-f927-4ac4-8233-1edb438066b2",
      "m1": "جهان را به آیین شاهان بدار",
      "m2": "چو آمختی از پاک پروردگار",
      "verse_number": 20
    },
    {
      "id": "c6396271-2ea0-4cd4-b399-065eecde9f71",
      "m1": "به فرجام هم روز تو بگذرد",
      "m2": "سپهر روانت به پی بسپرد",
      "verse_number": 21
    },
    {
      "id": "92c9e98f-20bf-47ba-9c5a-4218c9fb1e7b",
      "m1": "چنان رو که پرسند پاسخ کنی",
      "m2": "به پاسخگری روز فرخ کنی",
      "verse_number": 22
    },
    {
      "id": "aecc5d6f-a97d-4897-a4eb-911707f9a389",
      "m1": "بگفت این و چادر به سر درکشید",
      "m2": "یکی بادسرد از جگر برکشید",
      "verse_number": 23
    },
    {
      "id": "dbbb4632-6da1-44b4-8579-3f7c402320c3",
      "m1": "همان روز گفتی که نرسی نبود",
      "m2": "همان تخت و دیهیم و کرسی نبود",
      "verse_number": 24
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 24
  }
}