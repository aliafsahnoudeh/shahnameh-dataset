{
  "id": "63244927-ed48-4ddf-b8da-00fba8caa819",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "2859e3b2-7b79-4045-b6d3-78b6f7fba38a",
      "m1": "وزان پس پراگنده شد آگهی",
      "m2": "که بیکار شد تخت شاهنشهی",
      "verse_number": 1
    },
    {
      "id": "e7b104fe-d28d-4caa-a197-6e12b9ecf1a9",
      "m1": "بمرد اردشیر آن خردمند شاه",
      "m2": "به شاپور بسپرد گنج و سپاه",
      "verse_number": 2
    },
    {
      "id": "d5164f5c-8c00-48c2-9400-1998b1290085",
      "m1": "خروشی برآمد ز هر مرز و بوم",
      "m2": "ز قیدافه برداشتند باژ روم",
      "verse_number": 3
    },
    {
      "id": "165b6e61-b722-4e51-8f07-958a93a719e4",
      "m1": "چو آگاهی آمد به شاپور شاه",
      "m2": "بیاراست کوس و درفش و سپاه",
      "verse_number": 4
    },
    {
      "id": "27437a0e-6db6-4996-a224-971ef05fc84e",
      "m1": "همی راند تا پیش التوینه",
      "m2": "سپاهی سبک بینیاز از بنه",
      "verse_number": 5
    },
    {
      "id": "4dc2a1cc-b80b-4753-b7b6-437b33d93621",
      "m1": "سپاهی ز قیدافه آمد برون",
      "m2": "که از گرد خورشید شد تیرهگون",
      "verse_number": 6
    },
    {
      "id": "5c613661-4bbc-4aad-9843-c296c707b5ba",
      "m1": "ز التوینه همچنین لشکری",
      "m2": "بیامد سپهدارشان مهتری",
      "verse_number": 7
    },
    {
      "id": "d228e190-035a-4875-becb-ed36f335b09b",
      "m1": "برانوش بد نام آن پهلوان",
      "m2": "سواری سرافراز و روشنروان",
      "verse_number": 8
    },
    {
      "id": "1b3cb7f2-6b14-4bdd-adf8-9ed309d190d4",
      "m1": "کجا بود بر قیصران ارجمند",
      "m2": "کمند افگنی نامداری بلند",
      "verse_number": 9
    },
    {
      "id": "9d088d60-d1d9-4dfe-b0e5-1d22e7b269d3",
      "m1": "چو برخاست آواز کوس از دو روی",
      "m2": "ز قلب اندر آمد گو نامجوی",
      "verse_number": 10
    },
    {
      "id": "7d8ca145-b124-46a4-b30c-92f9ab98f4da",
      "m1": "وزین سو بشد نامداری دلیر",
      "m2": "کجا نام او بود گرزسپ شیر",
      "verse_number": 11
    },
    {
      "id": "c51b8197-eec9-4553-a06e-0417c6455d97",
      "m1": "برآمد ز هر دو سپه کوس و غو",
      "m2": "بجنبید در قلبگه شاه نو",
      "verse_number": 12
    },
    {
      "id": "e48917e3-a1af-4c65-957e-15c9548160ce",
      "m1": "ز بس نالهٔ بوق و هندی درای",
      "m2": "همی چرخ و ماهاندر آمد ز جای",
      "verse_number": 13
    },
    {
      "id": "7bdd4afc-b9ae-4368-a50e-c2e9c8c3b096",
      "m1": "تبیره ببستند بر پشت پیل",
      "m2": "همیبر شد آوازشان بر دو میل",
      "verse_number": 14
    },
    {
      "id": "bc87b830-ed9e-4e19-b366-a5ced0203b69",
      "m1": "زمین جنب جنبان شد و پر ز گرد",
      "m2": "چو آتش درخشان سنان نبرد",
      "verse_number": 15
    },
    {
      "id": "ce639a9d-1a8a-412d-8d37-6a9bbdd89349",
      "m1": "روانی کجا با خرد بود جفت",
      "m2": "ستاره همی بارد از چرخ گفت",
      "verse_number": 16
    },
    {
      "id": "a9389b64-0b5d-4818-b8a2-6382d74bc238",
      "m1": "برانوش جنگی به قلب اندرون",
      "m2": "گرفتار شد با دلی پر ز خون",
      "verse_number": 17
    },
    {
      "id": "7cec0f5b-730f-4c99-b3b7-30116f4fd8eb",
      "m1": "وزان رومیان کشته شد سه هزار",
      "m2": "بالتوینه در صف کارزار",
      "verse_number": 18
    },
    {
      "id": "7139aa8e-7f0e-4968-91a4-501c27593972",
      "m1": "هزار و دو سیصد گرفتار شد",
      "m2": "دل جنگیان پر ز تیمار شد",
      "verse_number": 19
    },
    {
      "id": "b4f69a0c-1c69-4161-8dd0-35fefc623b21",
      "m1": "فرستاد قیصر یکی یادگیر",
      "m2": "به نزدیک شاپور شاه اردشیر",
      "verse_number": 20
    },
    {
      "id": "ffbc3c63-4fa6-40a5-a259-3679cfcc0ff6",
      "m1": "که چندین تو از بهر دینار خون",
      "m2": "بریزی تو با داور رهنمون",
      "verse_number": 21
    },
    {
      "id": "be489daa-eb3c-46f6-97e1-802df643064a",
      "m1": "چه گویی چو پرسند روز شمار",
      "m2": "چه پوزش کنی پیش پروردگار",
      "verse_number": 22
    },
    {
      "id": "93315715-2ed0-4cca-833f-5d4bf6a9076d",
      "m1": "فرستیم باژی چنان هم که بود",
      "m2": "برین نیز دردی نباید فزود",
      "verse_number": 23
    },
    {
      "id": "8facc819-f295-4f68-bd07-7e261fda0d94",
      "m1": "همان نیز با باژ فرمان کنیم",
      "m2": "ز خویشان فراوان گروگان کنیم",
      "verse_number": 24
    },
    {
      "id": "32113424-82c8-4b38-8c32-1b42267495d6",
      "m1": "ز التوینه بازگردی رواست",
      "m2": "فرستیم با باژ هرچت هواست",
      "verse_number": 25
    },
    {
      "id": "6cf2e9b2-c29d-4ae6-b1d7-e0dfe2d0eac9",
      "m1": "همی بود شاپور تا باژ و ساو",
      "m2": "فرستاد قیصر ده انبان گاو",
      "verse_number": 26
    },
    {
      "id": "e2a6f12e-266b-43f7-8595-8f4198648bb2",
      "m1": "غلام و پرستار رومی هزار",
      "m2": "گرانمایه دیبا نه اندر شمار",
      "verse_number": 27
    },
    {
      "id": "8b79c67c-c0db-4f30-83f2-3ee1c1e54427",
      "m1": "بالتوینه در ببد روز هفت",
      "m2": "ز روم اندر آمد به اهواز رفت",
      "verse_number": 28
    },
    {
      "id": "7504b76b-95ca-4f19-84d0-8e1622fbda6e",
      "m1": "یکی شارستان نام شاپور گرد",
      "m2": "برآورد و پرداخت در روز ارد",
      "verse_number": 29
    },
    {
      "id": "c0ebca22-46fe-4635-bd3f-275608bda45b",
      "m1": "همی برد سالار زان شهر رنج",
      "m2": "بپردخت بسیار با رنج گنج",
      "verse_number": 30
    },
    {
      "id": "4f6b29b5-f64a-4f84-847c-ed28cadf9f44",
      "m1": "یکی شارستان بود آباد بوم",
      "m2": "بپردخت بهر اسیران روم",
      "verse_number": 31
    },
    {
      "id": "ac9bfcd4-bf86-46fd-ad77-a7be98a749c4",
      "m1": "در خوزیان دارد این بوم و بر",
      "m2": "که دارند هرکس بروبر گذر",
      "verse_number": 32
    },
    {
      "id": "f39ccd8c-67c0-476c-a91d-3f4b704375ba",
      "m1": "به پارس اندرون شارستان بلند",
      "m2": "برآورد پاکیزه و سودمند",
      "verse_number": 33
    },
    {
      "id": "bfba5def-84ed-4964-a8db-2b61ace9e6a7",
      "m1": "یکی شارستان کرد در سیستان",
      "m2": "در آنجای بسیار خرماستان",
      "verse_number": 34
    },
    {
      "id": "300c7a09-50f7-46f3-96c6-d34dcbc7c170",
      "m1": "که یک نیم او کرده بود اردشیر",
      "m2": "دگر نیم شاپور گرد و دلیر",
      "verse_number": 35
    },
    {
      "id": "53c6edde-d5af-4138-a86d-b78bd5a60eb6",
      "m1": "کهن دژ به شهر نشاپور کرد",
      "m2": "که گویند با داد شاپور کرد",
      "verse_number": 36
    },
    {
      "id": "330a9428-ca09-400a-bb23-07e55c2e5c18",
      "m1": "همی برد هر سو برانوش را",
      "m2": "بدو داشتی در سخن گوش را",
      "verse_number": 37
    },
    {
      "id": "e617decc-4b57-4919-a8d7-3e3f7589ca08",
      "m1": "یکی رود بد پهن در شوشتر",
      "m2": "که ماهی نکردی بروبر گذر",
      "verse_number": 38
    },
    {
      "id": "a641d71f-29d9-41e7-90ee-980317d3f32c",
      "m1": "برانوش را گفت گر هندسی",
      "m2": "پلی ساز آنجا چنانچون رسی",
      "verse_number": 39
    },
    {
      "id": "05d67253-8743-4ccc-9479-3d195b2b1357",
      "m1": "که ما بازگردیم و آن پل به جای",
      "m2": "بماند به دانایی رهنمای",
      "verse_number": 40
    },
    {
      "id": "5a06c697-de1a-4504-bdb2-a80c6c67dbfd",
      "m1": "به رش کرده بالای این پل هزار",
      "m2": "بخواهی ز گنج آنچ آید به کار",
      "verse_number": 41
    },
    {
      "id": "9ebcf529-a928-40ea-87ee-66dffa325c50",
      "m1": "تو از دانشی فیلسوفان روم",
      "m2": "فراز آر چندی بران مرز و بوم",
      "verse_number": 42
    },
    {
      "id": "546f3342-4ba4-431e-8e26-22e8a928ee10",
      "m1": "چو این پل برآید سوی خان خویش",
      "m2": "برو تازیان باش مهمان خویش",
      "verse_number": 43
    },
    {
      "id": "8810e584-6dd7-498e-9d44-85bfde5c7b01",
      "m1": "ابا شادمانی و با ایمنی",
      "m2": "ز بد دور وز دست اهریمنی",
      "verse_number": 44
    },
    {
      "id": "2d201824-6b9f-41b9-b711-e335b2b53948",
      "m1": "به تدبیر آن پل باستاد مرد",
      "m2": "فراز آوریدش بران کارکرد",
      "verse_number": 45
    },
    {
      "id": "2d2589b8-28e2-41e4-95e6-f4870702892e",
      "m1": "بپردخت شاپور گنجی بران",
      "m2": "که زان باشد آسانی مردمان",
      "verse_number": 46
    },
    {
      "id": "2a986f1b-e119-4a90-908d-e3b53fb98520",
      "m1": "چو شد شه برانوش کرد آن تمام",
      "m2": "پلی کرد بالا هزارانش گام",
      "verse_number": 47
    },
    {
      "id": "292fa9f1-5d0c-4775-a6ec-f93f9f0b1b5b",
      "m1": "چو شد پل تمام او ز ششتر برفت",
      "m2": "سوی خان خود روی بنهاد تفت",
      "verse_number": 48
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 48
  }
}