{
  "id": "4f9887db-7f4e-4c94-896f-0b0f90d68496",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "57872d24-0837-4090-8709-9cfef3c4c3d1",
      "m1": "چو شاپور بنشست بر تخت داد",
      "m2": "کلاه دلفروز بر سر نهاد",
      "verse_number": 1
    },
    {
      "id": "140cec00-dce3-479e-804d-9c4429ffb401",
      "m1": "شدند انجمن پیش او بخردان",
      "m2": "بزرگان فرزانه و موبدان",
      "verse_number": 2
    },
    {
      "id": "84ec6b8d-0099-43f2-9b9c-5db8dd71db1a",
      "m1": "چنین گفت کای نامدار انجمن",
      "m2": "بزرگان پردانش و رایزن",
      "verse_number": 3
    },
    {
      "id": "7d514345-4217-4039-ac38-cf5f136274a5",
      "m1": "منم پاک فرزند شاه اردشیر",
      "m2": "سرایندهٔ دانش و یادگیر",
      "verse_number": 4
    },
    {
      "id": "bd42cd42-b7ef-4aab-a173-080ae52a836d",
      "m1": "همه گوش دارید فرمان من",
      "m2": "مگردید یکسر ز پیمان من",
      "verse_number": 5
    },
    {
      "id": "7153a35d-386c-4209-a376-5f6ef46f1b3a",
      "m1": "وزین هرچ گویم پژوهش کنید",
      "m2": "وگر خام گویم نکوهش کنید",
      "verse_number": 6
    },
    {
      "id": "3e5fc5e6-d116-4c97-9e57-6092fda6b5ab",
      "m1": "چو من دیدم اکنون به سود و زیان",
      "m2": "دو بخشش نهاده شد اندر میان",
      "verse_number": 7
    },
    {
      "id": "49ad3784-4800-4918-b9b7-44bbe05ec2c3",
      "m1": "یکی پادشا پاسبان جهان",
      "m2": "نگهبان گنج کهان و مهان",
      "verse_number": 8
    },
    {
      "id": "d9c20c10-393a-47b8-b109-d2dfaf7ff92f",
      "m1": "وگر شاه با داد و فرخ پیست",
      "m2": "خرد بیگمان پاسبان ویست",
      "verse_number": 9
    },
    {
      "id": "6338c429-8de9-4825-867f-328656575054",
      "m1": "خرد پاسبان باشد و نیکخواه",
      "m2": "سرش برگذارد ز ابر سیاه",
      "verse_number": 10
    },
    {
      "id": "f2a51658-62e6-4034-bec0-b4eada52fdb4",
      "m1": "همه جستنش داد و دانش بود",
      "m2": "ز دانش روانش به رامش بود",
      "verse_number": 11
    },
    {
      "id": "511bda30-49bd-4b85-91eb-a82d508c0a3c",
      "m1": "دگر آنک او بآزمون خرد",
      "m2": "بکوشد بمردی و گرد آورد",
      "verse_number": 12
    },
    {
      "id": "3d008f0d-7ee2-4359-8aab-779e8e2af20c",
      "m1": "به دانش ز یزدان شناسد سپاس",
      "m2": "خنک مرد دانا و یزدانشناس",
      "verse_number": 13
    },
    {
      "id": "e3aa150e-9b19-4526-b918-435893cf5306",
      "m1": "به شاهی خردمند باشد سزا",
      "m2": "به جای خرد زر شود بیبها",
      "verse_number": 14
    },
    {
      "id": "5a0559df-ed3c-4ba0-ae19-3ae6e3352245",
      "m1": "توانگر شود هرک خشنود گشت",
      "m2": "دل آرزو خانهٔ دود گشت",
      "verse_number": 15
    },
    {
      "id": "1494f7b0-4d7e-4346-bc4d-fd95ea8843b4",
      "m1": "کرا آرزو بیش تیمار بیش",
      "m2": "بکوش ونیوش و منه آز پیش",
      "verse_number": 16
    },
    {
      "id": "7bc58622-aea4-4d18-abbd-8ac6906e96a1",
      "m1": "به آسایش و نیکنامی گرای",
      "m2": "گریزان شو از مرد ناپاک رای",
      "verse_number": 17
    },
    {
      "id": "2edec821-3e53-41b3-a80a-70ea3c4e8c90",
      "m1": "به چیز کسان دست یازد کسی",
      "m2": "که فرهنگ بهرش نباشد بسی",
      "verse_number": 18
    },
    {
      "id": "8a7968a2-ae97-41d8-aaff-e91f2f817a42",
      "m1": "مرا بر شما زان فزونست مهر",
      "m2": "که اختر نماید همی بر سپهر",
      "verse_number": 19
    },
    {
      "id": "fbc1e696-7afb-49b0-a436-5fdd66198fe7",
      "m1": "همان رسم شاه بلند اردشیر",
      "m2": "بجای آورم با شما ناگزیر",
      "verse_number": 20
    },
    {
      "id": "7e56b03b-3ffe-4c33-a5e5-be49992c1b5e",
      "m1": "ز دهقان نخواهم جز از سی یکی",
      "m2": "درم تا به لشکر دهم اندکی",
      "verse_number": 21
    },
    {
      "id": "df898638-8db6-4d03-9c84-6c006eea3c8b",
      "m1": "مرا خوبی و گنج آباد هست",
      "m2": "دلیری و مردی و بنیاد هست",
      "verse_number": 22
    },
    {
      "id": "321f7882-9e7a-4290-b397-3087ddc0dbce",
      "m1": "ز چیز کسان بینیازیم نیز",
      "m2": "که دشمن شود مردم از بهر چیز",
      "verse_number": 23
    },
    {
      "id": "6ca62809-109e-4cb9-8f91-401351207e85",
      "m1": "بر ما شما را گشتادهست راه",
      "m2": "به مهریم با مردم نیکخواه",
      "verse_number": 24
    },
    {
      "id": "a299699c-546d-4eff-92ac-a58b599fce2e",
      "m1": "بهر سو فرستیم کارآگهان",
      "m2": "بجوییم بیدار کار جهان",
      "verse_number": 25
    },
    {
      "id": "fbc1d387-e2f8-4d1e-a0a4-86317b2e786e",
      "m1": "نخواهیم هرگز به جز آفرین",
      "m2": "که بر ما کنند از جهانآفرین",
      "verse_number": 26
    },
    {
      "id": "ad560c5d-10b5-4c09-9180-c98990e3443e",
      "m1": "مهان و کهان پاک برخاستند",
      "m2": "زبان را به خوبی بیاراستند",
      "verse_number": 27
    },
    {
      "id": "6704ecb9-011f-4d97-ba1f-37163d8f8ebd",
      "m1": "به شاپور بر آفرین خواندند",
      "m2": "زبرجد به تاجش برافشاندند",
      "verse_number": 28
    },
    {
      "id": "8362f960-e20d-4afd-bb44-c126731bc75d",
      "m1": "همی تازه شد رسم شاه اردشیر",
      "m2": "بدو شاد گشتند برنا و پیر",
      "verse_number": 29
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 29
  },
