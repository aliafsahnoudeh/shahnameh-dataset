{
  "id": "d78adb20-7558-4917-8f12-4df525ce3fa7",
  "title": "پادشاهی اورمزد نرسی",
  "verses": [
    {
      "id": "1b65f67c-2f77-40e7-be32-150f26f8444f",
      "m1": "چو بر گاه رفت اورمزد بزرگ",
      "m2": "ز نخچیر کوتاه شد چنگ گرگ",
      "verse_number": 1
    },
    {
      "id": "0b93d924-94da-41cf-aded-d08995125425",
      "m1": "جهان را همی داشت با ایمنی",
      "m2": "نهان گشت کردار آهرمنی",
      "verse_number": 2
    },
    {
      "id": "fa0d8e82-927b-4370-a0f7-069b19c420c1",
      "m1": "نخست آفرین کرد بر کردگار",
      "m2": "توانا و دانا و پروردگار",
      "verse_number": 3
    },
    {
      "id": "2f336513-6e99-4c4b-9059-e93d03219aee",
      "m1": "شب و روز و گردان سپهر آفرید",
      "m2": "چو بهرام و کیوان و مهر آفرید",
      "verse_number": 4
    },
    {
      "id": "88484e28-8ae2-478a-a117-24af276eba7b",
      "m1": "ازویست پیروزی و فرهی",
      "m2": "دل و داد و دیهیم شاهنشهی",
      "verse_number": 5
    },
    {
      "id": "d11357ac-204b-4b7b-bd68-41c622a74f63",
      "m1": "همیشه دل ما پر از داد باد",
      "m2": "دل زیردستان به ما شاد باد",
      "verse_number": 6
    },
    {
      "id": "38c7077e-3343-4442-ae72-b7750429dad8",
      "m1": "ستایش نیابد سر سفله مرد",
      "m2": "بر سفلگان تا توانی مگرد",
      "verse_number": 7
    },
    {
      "id": "226486bf-160b-4444-bfba-af7374826f93",
      "m1": "همان نیز با مرد بدخواه رای",
      "m2": "اگر پندگیری به نیکی گرای",
      "verse_number": 8
    },
    {
      "id": "095afa50-2fe7-43e7-bc12-96359344c61a",
      "m1": "ز بخشش هرانکس که جوید سپاس",
      "m2": "نخواندش بخشنده یزدانشناس",
      "verse_number": 9
    },
    {
      "id": "c02760fd-eca7-4e11-8286-ff322d4d4a17",
      "m1": "ستاننده گر ناسپاست نیز",
      "m2": "سزد گر ندارد کس او را به چیز",
      "verse_number": 10
    },
    {
      "id": "db05bf92-b1ef-4572-bb17-a2345de27233",
      "m1": "هراسان بود مردم سختکار",
      "m2": "که او را نباشد کسی دوستدار",
      "verse_number": 11
    },
    {
      "id": "31748577-bd1c-42f4-b4fd-dc606843a8a8",
      "m1": "وگر سستی آرد به کار اندرون",
      "m2": "نخواند ورا رایزن رهنمون",
      "verse_number": 12
    },
    {
      "id": "028e07ef-367d-4b4e-8e11-f031edd067a2",
      "m1": "گر از کاهلان یار خواهی به کار",
      "m2": "نباشی جهانجوی و مردمشمار",
      "verse_number": 13
    },
    {
      "id": "af5f22cd-682f-4a2a-bb0c-f3416c5c1251",
      "m1": "نگر خویشتن را نداری بزرگ",
      "m2": "وگر گاه یابی نگردی سترگ",
      "verse_number": 14
    },
    {
      "id": "3e9df2c5-61bd-4eb8-becb-9215fb13350b",
      "m1": "چو بدخو شود مرد درویش خوار",
      "m2": "همی بیند آن از بد روزگار",
      "verse_number": 15
    },
    {
      "id": "e46e408b-fb88-45cb-8a80-480d4d473aa8",
      "m1": "همهساله بیکار و نالان ز بخت",
      "m2": "نه رای و نه دانش نه زیبای تخت",
      "verse_number": 16
    },
    {
      "id": "ee332f62-59fa-4a56-92d8-58e0ef900eb7",
      "m1": "وگر بازگیرند ازو خواسته",
      "m2": "شود جان و مغز و دلش کاسته",
      "verse_number": 17
    },
    {
      "id": "4ccf38b8-e6c8-47eb-85c6-3796f7887d1c",
      "m1": "به بی چیزی و بدخویی یازد اوی",
      "m2": "ندارد خرد گردن افرازد اوی",
      "verse_number": 18
    },
    {
      "id": "5f055d77-f3b0-47b8-9c1b-adfbdcc60df4",
      "m1": "نه چیز و نه دانش نه رای و هنر",
      "m2": "نه دین و نه خشنودی دادگر",
      "verse_number": 19
    },
    {
      "id": "a8885cfe-54d5-4871-b231-3007dfbd2aa6",
      "m1": "شما را شب و روز فرخنده باد",
      "m2": "بداندیش را جان پراگنده باد",
      "verse_number": 20
    },
    {
      "id": "62b4867e-9398-4d72-a840-4b9db52ae58c",
      "m1": "برو مهتران آفرین ساختند",
      "m2": "خود از سوک شاهان بپرداختند",
      "verse_number": 21
    },
    {
      "id": "4180790a-8790-4291-bb69-25d1f544da0f",
      "m1": "چو نه سال بگذشت بر سر سپهر",
      "m2": "گل زرد شد آن چو گلنار چهر",
      "verse_number": 22
    },
    {
      "id": "cadc23be-13c7-4acb-a2b6-89443136a3ac",
      "m1": "غمی شد ز مرگ آن سر تاجور",
      "m2": "بمرد و به شاهی نبودش پسر",
      "verse_number": 23
    },
    {
      "id": "7c004ad2-76d5-4d7d-9a31-1248cc1d7690",
      "m1": "چنان نامور مرد شیرینسخن",
      "m2": "به نوی بشد زین سرای کهن",
      "verse_number": 24
    },
    {
      "id": "48028dd8-cf8f-476e-ba12-01dde0e9592c",
      "m1": "چنین بود تا بود چرخ روان",
      "m2": "توانا به هر کار و ما ناتوان",
      "verse_number": 25
    },
    {
      "id": "b29fb33f-3bd4-4d84-9088-7faab96ae928",
      "m1": "چهل روز سوکش همی داشتند",
      "m2": "سر گاه او خوار بگذاشتند",
      "verse_number": 26
    },
    {
      "id": "35a47062-10c4-4589-afb7-af7495ce9b3b",
      "m1": "به چندین زمان تخت بیکار بود",
      "m2": "سر مهتران پر ز تیمار بود",
      "verse_number": 27
    },
    {
      "id": "d95efff9-9df7-4485-b0bf-9be09eda82bb",
      "m1": "نگه کرد موبد شبستان شاه",
      "m2": "یکی لاله رخ دید تابان چو ماه",
      "verse_number": 28
    },
    {
      "id": "bbc3d410-8b9c-4241-b538-ffab59754d87",
      "m1": "سر مژه چون خنجر کابلی",
      "m2": "دو زلفش چو پیچان خط مغولی ",
      "verse_number": 29
    },
    {
      "id": "c89da5b5-1bdc-450f-a543-52575b44cf5d",
      "m1": "مسلسل یک اندر دگر بافته",
      "m2": "گره بر زده سرش برتافته",
      "verse_number": 30
    },
    {
      "id": "9061c92b-2315-41d0-8b6c-68d7e304cfbe",
      "m1": "پری چهره را بچه اندر نهان",
      "m2": "ازان خوبرخ شادمان شد جهان",
      "verse_number": 31
    },
    {
      "id": "b5282350-c199-4029-a84a-14ce7f9cdd50",
      "m1": "چهل روزه شد رود و می خواستند",
      "m2": "یکی تخت شاهی بیاراستند",
      "verse_number": 32
    },
    {
      "id": "7f1d787d-2b0a-46de-874e-7cc448f7e1b7",
      "m1": "به سر برش تاجی برآویختند",
      "m2": "بران تاج زر و درم ریختند",
      "verse_number": 33
    },
    {
      "id": "ecab625a-dc2e-4ef7-a7a6-16b072dba8ea",
      "m1": "چهل روز بگذشت بر خوبچهر",
      "m2": "یکی کودک آمد چو تابنده مهر",
      "verse_number": 34
    },
    {
      "id": "b80fd16f-b710-44c8-8228-a7efd40d2bd1",
      "m1": "ورا موبدش نام شاپور کرد",
      "m2": "بران شادمانی یکی سور کرد",
      "verse_number": 35
    },
    {
      "id": "c9b908ee-4269-4601-b9c4-33a070def11a",
      "m1": "تو گفتی همی فره ایزدیست",
      "m2": "برو سایهٔ رایت بخردیست",
      "verse_number": 36
    },
    {
      "id": "aeb5233d-9293-4e0f-b809-5872e6e97841",
      "m1": "برفتند گردان زرین کمر",
      "m2": "بیاویختند از برش تاج زر",
      "verse_number": 37
    },
    {
      "id": "881c6e90-59a7-4fae-baf0-b40870b7ac5f",
      "m1": "چو آن خرد را سیر دادند شیر",
      "m2": "نوشتند پس در میان حریر",
      "verse_number": 38
    },
    {
      "id": "466ba26f-d716-4cf2-b0d3-778770679901",
      "m1": "چهل روزه را زیر آن تاج زر",
      "m2": "نهادند بر تخت فرخ پدر",
      "verse_number": 39
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 39
  }
}