{
  "id": "b9f561bc-b962-49d5-812f-a9f35d3c4f2a",
  "title": "بخش ۱۰",
  "verses": [
    {
      "id": "37befa75-f8e6-423d-9aea-c77791c733e8",
      "m1": "گزین کرد زان رومیان مرد چند",
      "m2": "خردمند و بادانش و بیگزند",
      "verse_number": 1
    },
    {
      "id": "08656e9d-8a68-4988-aa39-1890d0ddfda7",
      "m1": "یکی نامه بنوشت پس شهریار",
      "m2": "پر از پوزش و رنگ و بوی و نگار",
      "verse_number": 2
    },
    {
      "id": "261e8a4d-9f74-4cc4-8231-a843cb94e000",
      "m1": "که نه نامور ز استواران خویش",
      "m2": "ازین پرهنر نامداران خویش",
      "verse_number": 3
    },
    {
      "id": "5ec222ba-d735-405e-b765-4b64c76044c4",
      "m1": "خردمند و بادانش و شرم و رای",
      "m2": "جهانجوی و پردانش و رهنمای",
      "verse_number": 4
    },
    {
      "id": "e8d12caa-a7cd-4459-a871-3c842cda0ccf",
      "m1": "فرستادم اینک به نزدیک تو",
      "m2": "نه پیچند با رای باریک تو",
      "verse_number": 5
    },
    {
      "id": "62110e01-c046-4aaf-936b-525e5cca6984",
      "m1": "تو این چیزها را بدیشان نمای",
      "m2": "همانا بباشد همانجا به جای",
      "verse_number": 6
    },
    {
      "id": "f4ed3763-6a30-402c-8649-ae82697594c6",
      "m1": "چو من نامه یابم ز پیران خویش",
      "m2": "جهاندیده و رازداران خویش",
      "verse_number": 7
    },
    {
      "id": "fc5fa23f-1c7c-4778-b54f-41a345d89eec",
      "m1": "که بگذشت بر چشم ما چار چیز",
      "m2": "که کس را به گیتی نبودست نیز",
      "verse_number": 8
    },
    {
      "id": "bec65f36-374a-4b37-bb3e-11ac1600bf5c",
      "m1": "نویسم یکی نامهٔ دلپسند",
      "m2": "که کیدست تا باشد او شاه هند",
      "verse_number": 9
    },
    {
      "id": "3235ac64-2b40-4f93-b713-c4e5be1ea0f2",
      "m1": "خردمند نه مرد رومی برفت",
      "m2": "ز پیش سکندر سوی کید تفت",
      "verse_number": 10
    },
    {
      "id": "ef2a259a-cef5-493d-8027-fe459fc52873",
      "m1": "چو سالار هند آن سران را بدید",
      "m2": "فراوان بپرسید و پاسخ شنید",
      "verse_number": 11
    },
    {
      "id": "f5bc1c33-445a-4802-80da-fcb89a1c17d8",
      "m1": "چنانچون ببایست بنواختشان",
      "m2": "یکی جای شایسته بنشاختشان",
      "verse_number": 12
    },
    {
      "id": "453850b9-3477-40bb-b0b1-df103a494494",
      "m1": "دگر روز چون آسمان گشت زرد",
      "m2": "برآهیخت خورشید تیغ نبرد",
      "verse_number": 13
    },
    {
      "id": "94e0dbab-16e9-4e04-9981-35d063cf41cc",
      "m1": "بیاراست آن دختر شاه را",
      "m2": "نباید خود آراستن ماه را",
      "verse_number": 14
    },
    {
      "id": "2acd6ce9-74fc-41ff-83ac-729c85ba60f8",
      "m1": "به خانه درون تخت زرین نهاد",
      "m2": "به گرد اندر آرایش چین نهاد",
      "verse_number": 15
    },
    {
      "id": "7bba21d1-a1a9-46ef-a5b8-b5dce6101ae2",
      "m1": "نشست از بر تخت خورشید چهر",
      "m2": "ز ناهید تابندهتر بر سپهر",
      "verse_number": 16
    },
    {
      "id": "1d08bc4c-9f54-446d-a04c-86384361b520",
      "m1": "برفتند بیدار نه مرد پیر",
      "m2": "زبان چرب و گوینده و یادگیر",
      "verse_number": 17
    },
    {
      "id": "f892c9ca-028d-43d0-80c6-2d2fe76719ef",
      "m1": "فرستادشان شاه سوی عروس",
      "m2": "بر آواز اسکندر فیلقوس",
      "verse_number": 18
    },
    {
      "id": "065db302-d05e-4401-b6f9-ff92ac9611d2",
      "m1": "بدیدند پیران رخ دخت شاه",
      "m2": "درفشان ازو یاره و تخت و گاه",
      "verse_number": 19
    },
    {
      "id": "86affc76-0286-47d3-9ec1-dfbf8aa0bdce",
      "m1": "فرو ماندند اندرو خیره خیر",
      "m2": "ز دیدار او سست شد پای پیر",
      "verse_number": 20
    },
    {
      "id": "4d5da607-b61b-47a4-ba7e-5be1b0629361",
      "m1": "خردمند نه پیر مانده به جای",
      "m2": "زبانها پر از آفرین خدای",
      "verse_number": 21
    },
    {
      "id": "4800b81a-185b-432c-8d6f-f9be3b23b81a",
      "m1": "نه جای گذر دید ازیشان یکی",
      "m2": "نه زو چشم برداشتند اندکی",
      "verse_number": 22
    },
    {
      "id": "3907d73a-d2cb-4f34-b329-3f97262685c2",
      "m1": "چو فرزانگان دیرتر ماندند",
      "m2": "کس آمد بر شاهشان خواندند",
      "verse_number": 23
    },
    {
      "id": "c470776d-8a73-4ae4-a701-7bf92c6c040c",
      "m1": "چنین گفت با رومیان شهریار",
      "m2": "که چندین چرا بودتان روزگار",
      "verse_number": 24
    },
    {
      "id": "82cf736a-dde3-44c1-84ae-abb1a99d026a",
      "m1": "همو آدمی بودکان چهره داشت",
      "m2": "به خوبی ز هر اختری بهره داشت",
      "verse_number": 25
    },
    {
      "id": "78f964a6-89de-4e2f-a49a-0bc39d614043",
      "m1": "بدو گفت رومی که ای شهریار",
      "m2": "در ایوان چنو کس نبیند نگار",
      "verse_number": 26
    },
    {
      "id": "20052562-0fb4-4153-8b6f-2e82510a2249",
      "m1": "کنون هر یکی از یک اندام ماه",
      "m2": "فرستیم یک نامه نزدیک شاه",
      "verse_number": 27
    },
    {
      "id": "a9fb5c8d-c7ca-4700-8f76-20c62af4e7fe",
      "m1": "نشستند پس فیلسوفان بهم",
      "m2": "گرفتند قرطاس و قیر و قلم",
      "verse_number": 28
    },
    {
      "id": "d079e89f-85f2-449e-81b7-aeeab4f0138d",
      "m1": "نوشتند هر موبدی ز آنک دید",
      "m2": "که قرطاس ز انقاس شد ناپدید",
      "verse_number": 29
    },
    {
      "id": "c7a572c3-d50a-4f55-b526-d56e9bbb66a8",
      "m1": "ز نزدیک ایشان سواری برفت",
      "m2": "به نزد سکندر به میلاد تفت",
      "verse_number": 30
    },
    {
      "id": "05f66112-5290-4ac8-88a2-3c98bfefbb1c",
      "m1": "چو شاه جهان نامههاشان بخواند",
      "m2": "ز گفتارشان در شگفتی بماند",
      "verse_number": 31
    },
    {
      "id": "ef00efd9-45d9-4c0d-b7da-a7dedb514654",
      "m1": "به نامه هر اندام را زو یکی",
      "m2": "صفت کرده بودند لیک اندکی",
      "verse_number": 32
    },
    {
      "id": "896a59f1-5211-4f90-a5b3-b6b315f2a456",
      "m1": "بدیشان جهاندار پاسخ نوشت",
      "m2": "که بخبخ که دیدم خرم بهشت",
      "verse_number": 33
    },
    {
      "id": "cf755503-71c4-4703-9e23-a243d81ab4cd",
      "m1": "کنون بازگردید با چار چیز",
      "m2": "برین بر فزونی مجویید نیز",
      "verse_number": 34
    },
    {
      "id": "ff9fb76a-d30e-4d43-840a-a60762fc3a12",
      "m1": "چو منشور و عهد من او را دهید",
      "m2": "شما با فغستان بنه برنهید",
      "verse_number": 35
    },
    {
      "id": "e54184a3-6a24-489e-a115-0de5fdfc5f2d",
      "m1": "نیازارد او را کسی زین سپس",
      "m2": "ازو در جهان یافتم داد و بس",
      "verse_number": 36
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 36
  },
