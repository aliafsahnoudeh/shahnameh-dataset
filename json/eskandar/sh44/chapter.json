{
  "id": "6302a4a2-eea9-48aa-89ab-c20a2c547d49",
  "title": "بخش ۴۴",
  "verses": [
    {
      "id": "bd59c164-3a66-4274-aff6-5001c5f4e60c",
      "m1": "چو آگاه شد لشکر از درد شاه",
      "m2": "جهان گشت بر نامداران سیاه",
      "verse_number": 1
    },
    {
      "id": "52e0efb7-01e5-4c8b-9d50-0e584a53a050",
      "m1": "به تخت بزرگی نهادند روی",
      "m2": "جهان شد سراسر پر از گفتوگوی",
      "verse_number": 2
    },
    {
      "id": "89ceb068-2e8c-4996-9d81-78bfb3260cb8",
      "m1": "سکندر چو از لشکر آگاه شد",
      "m2": "بدانست کش روز کوتاه شد",
      "verse_number": 3
    },
    {
      "id": "90401f52-0ad9-4bb4-9f7f-8ab649fe87e3",
      "m1": "بفرمود تا تخت بیرون برند",
      "m2": "از ایوان شاهی به هامون برند",
      "verse_number": 4
    },
    {
      "id": "417e731c-5506-4a50-ae8d-f00226bb06db",
      "m1": "ز بیماری او غمی شد سپاه",
      "m2": "که بیرنگ دیدند رخسار شاه",
      "verse_number": 5
    },
    {
      "id": "cca68444-9f93-44b9-b090-2359f975a6e3",
      "m1": "همه دشت یکسر خروشان شدند",
      "m2": "چو بر آتش تیز جوشان شدند",
      "verse_number": 6
    },
    {
      "id": "558f753e-322d-4089-af9c-c67eb001c565",
      "m1": "همی گفت هرکس که بد روزگار",
      "m2": "که از رومیان کم شود شهریار",
      "verse_number": 7
    },
    {
      "id": "d6ad00af-b897-4e7c-a38f-9e326943b16b",
      "m1": "فرازآمد آن گردش بخت شوم",
      "m2": "که ویران شود زین سپس مرز روم",
      "verse_number": 8
    },
    {
      "id": "75807d5f-2d4a-4f0f-b9d4-ea73b64e902e",
      "m1": "همه دشمنان کام دل یافتند",
      "m2": "رسیدند جایی که بشتافتند",
      "verse_number": 9
    },
    {
      "id": "89d5769a-54f0-4f69-9ea3-1da44d7dcfb0",
      "m1": "بمابر کنون تلخ گردد جهان",
      "m2": "خروشان شویم آشکار و نهان",
      "verse_number": 10
    },
    {
      "id": "788b442f-72e1-45ca-9d3e-86215361d148",
      "m1": "چنین گفت قیصر به آوای نرم",
      "m2": "که ترسنده باشید با رای و شرم",
      "verse_number": 11
    },
    {
      "id": "d2d4c639-326c-4afd-8d35-f32c10b6af2e",
      "m1": "ز اندرز من سربسر مگذرید",
      "m2": "چو خواهید کز جان و تن برخورید",
      "verse_number": 12
    },
    {
      "id": "61d995c2-3e16-40f2-bbcf-5366e607d270",
      "m1": "پس از من شما را همینست کار",
      "m2": "نه با من همی بد کند روزگار",
      "verse_number": 13
    },
    {
      "id": "f0a877f5-3c4d-4960-b439-f12039d6df7f",
      "m1": "بگفت این و جانش برآمد ز تن",
      "m2": "شد آن نامور شاه لشکرشکن",
      "verse_number": 14
    },
    {
      "id": "f4a70126-238d-41bf-a91a-e87567cd2fe6",
      "m1": "ز لشکر سراسر برآمد خروش",
      "m2": "ز فریاد لشکر بدرید گوش",
      "verse_number": 15
    },
    {
      "id": "01fafbf0-a538-4257-858a-ba1bbb52ac31",
      "m1": "همه خاک بر سر همی بیختند",
      "m2": "ز مژگان همی خون دل ریختند",
      "verse_number": 16
    },
    {
      "id": "4c85977a-fa6f-434d-9f2d-e28434ce9f45",
      "m1": "زدند آتش اندر سرای نشست",
      "m2": "هزار اسپ را دم بریدند پست",
      "verse_number": 17
    },
    {
      "id": "65108890-f77d-49d3-8ac1-ec0f2ad0a0d3",
      "m1": "نهاده بر اسپان نگونسار زین",
      "m2": "تو گفتی همی برخروشد زمین",
      "verse_number": 18
    },
    {
      "id": "62e048d0-debc-43f7-988c-b9c65c12cf1d",
      "m1": "ببردند صندوق زرین به دشت",
      "m2": "همی ناله از آسمان برگذشت",
      "verse_number": 19
    },
    {
      "id": "06dc134b-5e3a-4e14-93f7-367153021170",
      "m1": "سکوبا بشستش به روشن گلاب",
      "m2": "پراگند بر تنش کافور ناب",
      "verse_number": 20
    },
    {
      "id": "1e0dbd21-9fae-41b9-a99d-962adf9d126d",
      "m1": "ز دیبای زربفت کردش کفن",
      "m2": "خروشان بران شهریار انجمن",
      "verse_number": 21
    },
    {
      "id": "7fc51054-7c1e-4095-a55e-0e26272e80e9",
      "m1": "تن نامور زیر دیبای چین",
      "m2": "نهادند تا پای در انگبین",
      "verse_number": 22
    },
    {
      "id": "583c8fb5-7ef9-4a34-a5a3-9cd5af4a4cc6",
      "m1": "سر تنگ تابوت کردند سخت",
      "m2": "شد آن سایه گستر دلاور درخت",
      "verse_number": 23
    },
    {
      "id": "5fd8eaf5-c3ce-4780-8fa9-be6e9c8a7b69",
      "m1": "نمانی همی در سرای سپنج",
      "m2": "چه یازی به تخت و چه نازی به گنج",
      "verse_number": 24
    },
    {
      "id": "a5e307e6-bed0-488b-8fa3-80184fae3582",
      "m1": "چو تابوت زان دشت برداشتند",
      "m2": "همه دست بر دست بگذاشتند",
      "verse_number": 25
    },
    {
      "id": "b00ef6dc-0946-4a60-ad27-68f6b66e1ddb",
      "m1": "دو آواز شد رومی و پارسی",
      "m2": "سخنشان ز تابوت بد یک بسی",
      "verse_number": 26
    },
    {
      "id": "6065dca2-30ce-4c27-9b7c-85b9a6528bb0",
      "m1": "هرانکس که او پارسی بود گفت",
      "m2": "که او را جز ایدر نباید نهفت",
      "verse_number": 27
    },
    {
      "id": "4af3e8c4-c4cd-4c94-9f9b-e2159647b911",
      "m1": "چو ایدر بود خاک شاهنشهان",
      "m2": "چه تازند تابوت گرد جهان",
      "verse_number": 28
    },
    {
      "id": "52bf13fb-f27c-4224-baec-c40b3744d3ba",
      "m1": "چنین گفت رومی یکی رهنمای",
      "m2": "که ایدر نهفتن ورا نیست رای",
      "verse_number": 29
    },
    {
      "id": "2d736ad1-64b1-4ee9-88f1-63e67da72b99",
      "m1": "اگر بشنوید آنچ گویم درست",
      "m2": "سکندر در آن خاک ریزد که رست",
      "verse_number": 30
    },
    {
      "id": "ae8b808c-8126-4449-8d91-cb295eed9233",
      "m1": "یکی پارسی نیز گفت این سخن",
      "m2": "که گر چندگویی نیاید به بن",
      "verse_number": 31
    },
    {
      "id": "e8c6df11-07bc-4b8b-9e98-fd8dad3c2e19",
      "m1": "نمایم شما را یکی مرغزار",
      "m2": "ز شاهان و پیشینگان یادگار",
      "verse_number": 32
    },
    {
      "id": "42e45d8a-8b95-46d9-b941-37b6632a51e0",
      "m1": "ورا جرم خواند جهاندیده پیر",
      "m2": "بدو اندرون بیشه و آبگیر",
      "verse_number": 33
    },
    {
      "id": "21f4a107-09aa-4a72-9ab3-c9db98062854",
      "m1": "چو پرسی ترا پاسخ آید ز کوه",
      "m2": "که آواز او بشنود هر گروه",
      "verse_number": 34
    },
    {
      "id": "7693a3e8-e13d-44fd-9f63-653ae9967bb7",
      "m1": "بیارید مر پیر فرتوت را",
      "m2": "هم ایدر بدارید تابوت را",
      "verse_number": 35
    },
    {
      "id": "4d24b582-2c0e-4c0e-838e-7e2fbb308628",
      "m1": "بپرسید اگر کوه پاسخ دهد",
      "m2": "شما را بدین رای فرخ نهد",
      "verse_number": 36
    },
    {
      "id": "61675d57-b0b7-4329-bbf0-e62c4f5fdbbd",
      "m1": "برفتند پویان به کردار غرم",
      "m2": "بدان بیشه کش باز خوانند جرم",
      "verse_number": 37
    },
    {
      "id": "643a1814-9db3-4893-82f1-7a084db8e2ba",
      "m1": "بگفتند پاسخ چنین داد باز",
      "m2": "که تابوت شاهان چه دارید راز",
      "verse_number": 38
    },
    {
      "id": "2e1f9e67-aa49-40f5-988d-12f92c1371f6",
      "m1": "که خاک سکندر به اسکندریست",
      "m2": "کجا کرده بد روزگاری که زیست",
      "verse_number": 39
    },
    {
      "id": "448450f7-51dd-4c97-875b-ee2430dab64e",
      "m1": "چو آواز بشنید لشکر برفت",
      "m2": "ببردند زان بیشه صندوق تفت",
      "verse_number": 40
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 40
  }
}