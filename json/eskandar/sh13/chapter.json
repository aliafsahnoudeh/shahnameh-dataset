{
  "id": "84c1ad0c-d9db-4136-9cea-c0fed8ecc4b2",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "d90dbad3-e3af-42cb-8882-fff112d9e240",
      "m1": "بفرمود تا رفت پیشش پزشک",
      "m2": "که علت بگفتی چو دیدی سرشک",
      "verse_number": 1
    },
    {
      "id": "7e69c67d-27f9-42f0-b6d9-27b53537a2d6",
      "m1": "سر دردمندی بدو گفت چیست",
      "m2": "که بر درد زان پس بباید گریست",
      "verse_number": 2
    },
    {
      "id": "440c2b16-64dd-4ede-8ff6-6e479cd4170d",
      "m1": "بدو گفت هر کس که افزون خورد",
      "m2": "چو بر خوان نشیند خورش ننگرد",
      "verse_number": 3
    },
    {
      "id": "ecde844c-890e-49aa-ad5e-b93852e38396",
      "m1": "نباشد فراوان خورش تن درست",
      "m2": "بزرگ آنک او تن درستی بجست",
      "verse_number": 4
    },
    {
      "id": "e684e843-b352-4e51-aa92-f16db3ad35e3",
      "m1": "بیامیزم اکنون ترا دارویی",
      "m2": "گیاها فراز آرم از هر سویی",
      "verse_number": 5
    },
    {
      "id": "20f4bd2c-3192-47eb-a3f5-0bf397a75d00",
      "m1": "که همواره باشی تو زان تن درست",
      "m2": "نباید به دارو ترا دست شست",
      "verse_number": 6
    },
    {
      "id": "4449a8ad-923e-4241-b5f6-a36a95751a63",
      "m1": "همان آرزوها بیفزایدت",
      "m2": "چو افزون خوری چیز نگزایدت",
      "verse_number": 7
    },
    {
      "id": "1887a542-d093-434a-a32a-a176e33ee962",
      "m1": "همان یاد داری سخنهای نغز",
      "m2": "بیفزاید اندر تنت خون و مغز",
      "verse_number": 8
    },
    {
      "id": "e181d579-c6fa-432a-bbc7-4d8e10c4c225",
      "m1": "شوی بر تن خویشتن کامگار",
      "m2": "دلت شاد گردد چو خرم بهار",
      "verse_number": 9
    },
    {
      "id": "08a19229-f66f-4d52-8125-633ba7818539",
      "m1": "همان رنگ چهرت به جای آورد",
      "m2": "به هر کار پاکیزه رای آورد",
      "verse_number": 10
    },
    {
      "id": "0ee61128-7e62-4763-bbe4-96ea7338c269",
      "m1": "نگردد پراگنده مویت سپید",
      "m2": "ز گیتی سپیدی کند ناامید",
      "verse_number": 11
    },
    {
      "id": "42e3a3c2-a243-4bd3-a5bd-4e35b6965b5c",
      "m1": "سکندر بدو گفت نشنیدهام",
      "m2": "نه کس را ز شاهان چنین دیدهام",
      "verse_number": 12
    },
    {
      "id": "f314c6dd-c661-4f14-9947-dff2b10413a6",
      "m1": "گر آری تو این نغز دارو به جای",
      "m2": "تو باشی به گیتی مرا رهنمای",
      "verse_number": 13
    },
    {
      "id": "40584a51-906c-46ba-bbbd-8b18f9d04f79",
      "m1": "خریدار گردم ترا من به جان",
      "m2": "شوی بیگزند از بد بدگمان",
      "verse_number": 14
    },
    {
      "id": "1c96477f-cd3f-493b-bad3-9e09863ec180",
      "m1": "ورا خلعت و نیکویها بساخت",
      "m2": "ز دانا پزشکان سرش برفراخت",
      "verse_number": 15
    },
    {
      "id": "10a23220-5e7e-4719-a216-d4211f9f186c",
      "m1": "پزشک سراینده آمد به کوه",
      "m2": "بیاورد با خویشتن زان گروه",
      "verse_number": 16
    },
    {
      "id": "81149365-579a-4a12-959e-4f889cf902bb",
      "m1": "ز دانایی او را فزون بود بهر",
      "m2": "همی زهر بشناخت از پای زهر",
      "verse_number": 17
    },
    {
      "id": "bb5c506d-16e7-4ff2-a58c-d59f28e3bcd1",
      "m1": "گیاهان کوهی فراوان درود",
      "m2": "بیفگند زو هرچ بیکار بود",
      "verse_number": 18
    },
    {
      "id": "95417d78-38f6-49e6-a113-365db8586b51",
      "m1": "ازو پاک تریاکها برگزید",
      "m2": "بیامیخت دارو چنانچون سزید",
      "verse_number": 19
    },
    {
      "id": "b490bd8b-f41c-4108-8b2e-77233ef7f993",
      "m1": "تنش را به داروی کوهی بشست",
      "m2": "همی داشتش سالیان تن درست",
      "verse_number": 20
    },
    {
      "id": "200c51c8-cd48-402d-b505-03d54775fbde",
      "m1": "چنان شد که او شب نخفتی بسی",
      "m2": "بیامیختی شاد با هر کسی",
      "verse_number": 21
    },
    {
      "id": "3b6fcbfd-ef04-4260-bbb8-d16df3975e43",
      "m1": "به کار زنان تیز بودی سرش",
      "m2": "همی نرم جایی بجستی برش",
      "verse_number": 22
    },
    {
      "id": "e486ac32-4596-4651-9619-5d55b2eb3828",
      "m1": "ازان سوی کاهش گرایید شاه",
      "m2": "نکرد اندر آن هیچ تن را نگاه",
      "verse_number": 23
    },
    {
      "id": "65c5d0d1-fd8d-4551-ad64-a4dc8d83785e",
      "m1": "چنان بد که روزی بیامد پزشک",
      "m2": "ز کاهش نشان یافت اندر سرشک",
      "verse_number": 24
    },
    {
      "id": "8771bc62-44c1-42a0-8db0-475d98de797d",
      "m1": "بدو گفت کز خفت و خیز زنان",
      "m2": "جوان پیر گردد به تن بیگمان",
      "verse_number": 25
    },
    {
      "id": "51c83df7-302b-47d3-8768-327d51b6d554",
      "m1": "برآنم که بیخواب بودی سه شب",
      "m2": "به من بازگوی این و بگشای لب",
      "verse_number": 26
    },
    {
      "id": "ccce4148-be4c-4fb1-8937-cf19ffbc6466",
      "m1": "سکندر بدو گفت من روشنم",
      "m2": "از آزار سستی ندارد تنم",
      "verse_number": 27
    },
    {
      "id": "a1549932-beaf-4e5b-9ae2-0f94595056c4",
      "m1": "پسندیده دانای هندوستان",
      "m2": "نبود اندر آن کار همداستان",
      "verse_number": 28
    },
    {
      "id": "a15b3680-3c33-407e-99b9-7925e42dd87b",
      "m1": "چو شب تیره شد آن نبشته بجست",
      "m2": "بیاورد داروی کاهش درست",
      "verse_number": 29
    },
    {
      "id": "c8228884-2b37-41ad-b1c4-84500ba261e1",
      "m1": "همان نیز تنها سکندر بخفت",
      "m2": "نیامیخت با ماه دیدار جفت",
      "verse_number": 30
    },
    {
      "id": "9bd890fc-6b6d-477f-a932-57f48d00a4f0",
      "m1": "به شبگیر هور اندر آمد پزشک",
      "m2": "نگه کرد و بیبار دیدش سرشک",
      "verse_number": 31
    },
    {
      "id": "7f39bf8a-279a-4c3e-9b72-15bf44dde6d0",
      "m1": "بینداخت دارو به رامش نشست",
      "m2": "یکی جام بگرفت شادان به دست",
      "verse_number": 32
    },
    {
      "id": "92d52708-e57e-4575-bd52-b737aadf1207",
      "m1": "بفرمود تا خوان بیاراستند",
      "m2": "نوازندهٔ رود و میخواستند",
      "verse_number": 33
    },
    {
      "id": "3b50f973-4483-4f7d-a568-0d0a772334cb",
      "m1": "بدو گفت شاه آن چرا ریختی",
      "m2": "چو با رنج دارو برآمیختی",
      "verse_number": 34
    },
    {
      "id": "7b2cde63-6905-4420-a70b-e06c6265a5c8",
      "m1": "ورا گفت شاه جهان دوش جفت",
      "m2": "نجست و شب تیره تنها بخفت",
      "verse_number": 35
    },
    {
      "id": "4f2d4eb3-bccf-494d-a545-961e35f8e690",
      "m1": "چو تنها بخسپی تو ای شهریار",
      "m2": "نیاید ترا هیچ دارو به کار",
      "verse_number": 36
    },
    {
      "id": "f6e7be31-bd99-4e8d-8784-b055af8d5576",
      "m1": "سکندر بخندید و زو شاد شد",
      "m2": "ز تیمار وز درد آزاد شد",
      "verse_number": 37
    },
    {
      "id": "fcdbecf8-1426-4dad-a55c-c474cfac9ce0",
      "m1": "وزان پس ز داننده دل کرد شاد",
      "m2": "ورا گفت بیهند گیتی مباد",
      "verse_number": 38
    },
    {
      "id": "bae6d722-5c65-4fbe-827b-f14edf046371",
      "m1": "بزرگان و اخترشناسان همه",
      "m2": "تو گویی به هندوستان شد رمه",
      "verse_number": 39
    },
    {
      "id": "35a18d5e-3cdd-4ccd-a0fd-efa18a95ea8c",
      "m1": "وزانجا بیامد سوی خان خویش",
      "m2": "همه شب همی ساخت درمان خویش",
      "verse_number": 40
    },
    {
      "id": "4d7b3009-7fae-4f1d-a1a7-bb83fc7e85b2",
      "m1": "چو برزد سر از کوه روشن چراغ",
      "m2": "چو دریا فروزنده شد دشت و راغ",
      "verse_number": 41
    },
    {
      "id": "8d30b1ca-04d2-414f-95c9-c9525968b177",
      "m1": "سکندر بیامد بران بارگاه",
      "m2": "دو لب پر ز خنده دل از غم تباه",
      "verse_number": 42
    },
    {
      "id": "82ec3c35-98d1-4468-84e8-6510aa0c5f8a",
      "m1": "فرستاده را دید سالار بار",
      "m2": "بپرسید و بردش بر شهریار",
      "verse_number": 43
    },
    {
      "id": "01d811f7-15cc-4a0c-9f85-f29f5d041091",
      "m1": "یکی بدره دینار و اسپی سیاه",
      "m2": "بهرای زرین بفرمود شاه",
      "verse_number": 44
    },
    {
      "id": "bedc445d-1dc0-4b10-8d08-fa885f1ae7b9",
      "m1": "پزشک خردمند را داد و گفت",
      "m2": "که با پاک رایت خرد باد جفت",
      "verse_number": 45
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 45
  }
}