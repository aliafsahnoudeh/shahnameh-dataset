{
  "id": "e3331536-2230-4899-80b1-c65efc8f52c6",
  "title": "بخش ۴۳",
  "verses": [
    {
      "id": "9c109ccc-1f8e-4af8-b94e-a9245579f501",
      "m1": "به بابل همان روز شد دردمند",
      "m2": "بدانست کامد به تنگی گزند",
      "verse_number": 1
    },
    {
      "id": "b635e84a-bda8-4307-85a5-dbb75f164a8e",
      "m1": "دبیر جهاندیده را پیش خواند",
      "m2": "هرانچش به دل بود با او براند",
      "verse_number": 2
    },
    {
      "id": "b78fe262-b774-45a1-9f49-47819a0a4d26",
      "m1": "به مادر یکی نامه فرمود و گفت",
      "m2": "که آگاهی مرگ نتوان نهفت",
      "verse_number": 3
    },
    {
      "id": "6bdfc9c0-5939-4118-bfcc-acc47b75efbe",
      "m1": "ز گیتی مرا بهره این بد که بود",
      "m2": "زمان چون نکاهد نشاید فزود",
      "verse_number": 4
    },
    {
      "id": "788b6e86-6930-41a0-b342-c35843145ec0",
      "m1": "تو از مرگ من هیچ غمگین مشو",
      "m2": "که اندر جهان این سخن نیست نو",
      "verse_number": 5
    },
    {
      "id": "037222e4-7d43-4be4-9543-7e975b6eb9a0",
      "m1": "هرانکس که زاید ببایدش مرد",
      "m2": "اگر شهریارست گر مرد خرد",
      "verse_number": 6
    },
    {
      "id": "e0f8a8a0-c2f7-4771-816b-87f71788ba6e",
      "m1": "بگویم کنون با بزرگان روم",
      "m2": "که چون بازگردند زین مرز و بوم",
      "verse_number": 7
    },
    {
      "id": "a0ba13bc-d4d1-43a4-a38a-5baa1025f558",
      "m1": "نجویند جز رای و فرمان تو",
      "m2": "کسی برنگردد ز پیمان تو",
      "verse_number": 8
    },
    {
      "id": "ea15b2f2-702c-4d2a-80e4-fc59c281fdc6",
      "m1": "هرانکس که بودند ز ایرانیان",
      "m2": "کزیشان بدی رومیان را زیان",
      "verse_number": 9
    },
    {
      "id": "9d100557-8dd0-4af2-b104-877b22d05ce9",
      "m1": "سپردم به هر مهتری کشوری",
      "m2": "که گردد بر آن پادشاهی سری",
      "verse_number": 10
    },
    {
      "id": "4836b972-ffb0-40ff-a619-685504493340",
      "m1": "همانا نیازش نیاید به روم",
      "m2": "برآساید آن کشور و مرز و بوم",
      "verse_number": 11
    },
    {
      "id": "7828357a-a7e6-44f4-beeb-2413c711d01e",
      "m1": "مرا مرده در خاک مصر آگنید",
      "m2": "ز گفتار من هیچ مپراگنید",
      "verse_number": 12
    },
    {
      "id": "6ba563ac-bbcd-4096-bf40-80e14f0e3342",
      "m1": "به سالی ز دینار من صدهزار",
      "m2": "ببخشید بر مردم خیشکار",
      "verse_number": 13
    },
    {
      "id": "b205cf4a-d33e-4036-a036-4951a74c8b79",
      "m1": "گر آید یکی روشنک را پسر",
      "m2": "بود بیگمان زنده نام پدر",
      "verse_number": 14
    },
    {
      "id": "25311a22-38a4-4fc7-854d-883f44bc8d2e",
      "m1": "نباید که باشد جزو شاه روم",
      "m2": "که او تازه گرداند آن مرز و بوم",
      "verse_number": 15
    },
    {
      "id": "a98f3f94-09c6-4883-a440-6b22379017d0",
      "m1": "وگر دختر آید به هنگام بوس",
      "m2": "به پیوند با تخمهٔ فیلقوس",
      "verse_number": 16
    },
    {
      "id": "85a65269-a85f-4bcc-9af4-d96fc3efde3c",
      "m1": "تو فرزند خوانش نه داماد من",
      "m2": "بدو تازه کن در جهان یاد من",
      "verse_number": 17
    },
    {
      "id": "12b8141c-c2d8-4930-a2ce-8d0f717426a1",
      "m1": "دگر دختر کید را بیگزند",
      "m2": "فرستید نزد پدر ارجمند",
      "verse_number": 18
    },
    {
      "id": "1b410478-6f39-4847-9840-06557179f21f",
      "m1": "ابا یاره و برده و نیکخواه",
      "m2": "عمار بسیچید بااو به راه",
      "verse_number": 19
    },
    {
      "id": "6fd5f5c1-9c44-4b6f-9cc6-8d43d398a488",
      "m1": "همان افسر و گوهر و سیم و زر",
      "m2": "که آورده بود او ز پیش پدر",
      "verse_number": 20
    },
    {
      "id": "f3c18bd6-210e-4cd1-b592-74b97b1a27d0",
      "m1": "به رفتن چنو گشت همداستان",
      "m2": "فرستید با او به هندوستان",
      "verse_number": 21
    },
    {
      "id": "e85a3a7a-b216-473b-9d9c-defd0310a230",
      "m1": "من ایدر همه کار کردم به برگ",
      "m2": "به بیچارگی دل نهادم به مرگ",
      "verse_number": 22
    },
    {
      "id": "6751564b-dfb1-44fd-87e3-a45fc7e73aad",
      "m1": "نخست آنک تابوت زرین کنند",
      "m2": "کفن بر تنم عنبر آگین کنند",
      "verse_number": 23
    },
    {
      "id": "704f5a1e-aac5-4374-85f2-ae9f1d7e3935",
      "m1": "ز زربفت چینی سزاوار من",
      "m2": "کسی کو بپیچد ز تیمار من",
      "verse_number": 24
    },
    {
      "id": "aaf83785-c047-4e3b-918e-0e358125504f",
      "m1": "در و بند تابوت ما را به قیر",
      "m2": "بگیرند و کافور و مشک و عبیر",
      "verse_number": 25
    },
    {
      "id": "5a919948-8aad-4ae8-b919-aa9a4919efff",
      "m1": "نخست آگنند اندرو انگبین",
      "m2": "زبر انگبین زیر دیبای چین",
      "verse_number": 26
    },
    {
      "id": "0d3f515a-cd63-41b5-8e3c-af88ee834eab",
      "m1": "ازان پس تن من نهند اندران",
      "m2": "سرآمد سخن چون برآمد روان",
      "verse_number": 27
    },
    {
      "id": "275f3ca9-0c6b-4fe8-86c3-ac1b0f5977fa",
      "m1": "تو پند من ای مادر پرخرد",
      "m2": "نگهدار تا روز من بگذرد",
      "verse_number": 28
    },
    {
      "id": "0765a165-0a93-45e2-aad5-8acd4a355318",
      "m1": "ز چیزی که آوردم از هند و چین",
      "m2": "ز توران و ایران و مکران زمین",
      "verse_number": 29
    },
    {
      "id": "cd59444e-f61e-4ef0-9633-b2561e085b0e",
      "m1": "بدار و ببخش آنچ افزون بود",
      "m2": "وز اندازهٔ خویش بیرون بود",
      "verse_number": 30
    },
    {
      "id": "d105d0c1-eaf4-4cbf-94b4-76b7a34f2413",
      "m1": "به تو حاجت آنستم ای مهربان",
      "m2": "که بیدار باشی و روشنروان",
      "verse_number": 31
    },
    {
      "id": "af77b74d-e222-48da-8b02-e0157ba070af",
      "m1": "نداری تن خویش را رنجه بس",
      "m2": "که اندر جهان نیست جاوید کس",
      "verse_number": 32
    },
    {
      "id": "ddc9dab7-7273-4d7b-98d5-58f92a2f44e9",
      "m1": "روانم روان ترا بیگمان",
      "m2": "ببیند چو تنگ اندر آید زمان",
      "verse_number": 33
    },
    {
      "id": "6f8d92af-c8cc-4643-93c6-36ac8b62e1b4",
      "m1": "شکیبایی از مهر نامیتر است",
      "m2": "سبکسر بود هرک او کهتر است",
      "verse_number": 34
    },
    {
      "id": "0f787abf-7e60-4ae1-9ce3-c835ca19facf",
      "m1": "ترا مهر بد بر تنم سال و ماه",
      "m2": "کنون جان پاکم ز یزدان بخواه",
      "verse_number": 35
    },
    {
      "id": "98963580-bd20-4354-ba59-8b078387d928",
      "m1": "بدین خواستن باش فریادرس",
      "m2": "که فریادرس باشدم دسترس",
      "verse_number": 36
    },
    {
      "id": "3a1150e5-e306-4759-89e7-3014307119a7",
      "m1": "نگر تا که بینی به گرد جهان",
      "m2": "که او نیست از مرگ خستهروان",
      "verse_number": 37
    },
    {
      "id": "a6f11cc0-21f0-4ff5-a74e-074e4e28089c",
      "m1": "چو نامه به مهر اندر آورد و بند",
      "m2": "بفرمود تا بر ستور نوند",
      "verse_number": 38
    },
    {
      "id": "018a1150-8a93-4ccc-859e-6a12c8126693",
      "m1": "ز بابل به روم آورند آگهی",
      "m2": "که تیره شد آن فر شاهنشهی",
      "verse_number": 39
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 39
  }
}