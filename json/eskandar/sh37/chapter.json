{
  "id": "845dd78e-f0ce-4347-bbb8-192dee33b7c2",
  "title": "بخش ۳۷",
  "verses": [
    {
      "id": "d207dd13-816b-42aa-b150-27d907f0577b",
      "m1": "همی رفت یک ماه پویان به راه",
      "m2": "به رنج اندر از راه شاه و سپاه",
      "verse_number": 1
    },
    {
      "id": "5bc7963b-8b32-4eba-98ff-267dc6f08d86",
      "m1": "چنین تا به نزدیک کوهی رسید",
      "m2": "که جایی دد و دام و ماهی ندید",
      "verse_number": 2
    },
    {
      "id": "bfb468d4-db07-4058-9fec-7aa764207177",
      "m1": "یکی کوه دید از برش لاژورد",
      "m2": "یکی خانه بر سر ز یاقوت زرد",
      "verse_number": 3
    },
    {
      "id": "ee40bdca-721c-4307-8fee-78571ab7a0e7",
      "m1": "همه خانه قندیلهای بلور",
      "m2": "میان اندرون چشمهٔ آب شور",
      "verse_number": 4
    },
    {
      "id": "70989dbc-fe93-4ce6-8dc4-1e85b80e78e2",
      "m1": "نهاده بر چشمه زرین دو تخت",
      "m2": "برو خوابنیده یکی شوربخت",
      "verse_number": 5
    },
    {
      "id": "9b7f6c93-2d71-4956-9b24-0770a552619a",
      "m1": "به تن مردم و سر چو آن گراز",
      "m2": "به بیچارگی مرده بر تخت ناز",
      "verse_number": 6
    },
    {
      "id": "aebba847-ebeb-48b8-85f5-3c8ce9aefa32",
      "m1": "ز کافور زیراندرش بستری",
      "m2": "کشیده ز دیبا برو چادری",
      "verse_number": 7
    },
    {
      "id": "d753cf0b-67e2-44d6-8ec9-445b12da8f74",
      "m1": "یکی سرخ گوهر به جای چراغ",
      "m2": "فروزان شده زو همه بوم و راغ",
      "verse_number": 8
    },
    {
      "id": "77ffd113-ab11-4f90-8d88-6510b88a33d9",
      "m1": "فتاده فروغ ستاره در آب",
      "m2": "ز گوهر همه خانه چون آفتاب",
      "verse_number": 9
    },
    {
      "id": "ffed4e6a-f9ad-4187-a848-e81f4b597548",
      "m1": "هرانکس که رفتی که چیزی برد",
      "m2": "وگر خاک آن خانه را بسپرد",
      "verse_number": 10
    },
    {
      "id": "7bb8b03a-0955-4323-9376-4b248badaa1f",
      "m1": "همه تنش بر جای لرزان شدی",
      "m2": "وزان لرزه آن زنده ریزان شدی",
      "verse_number": 11
    },
    {
      "id": "1fa23d3b-ec1e-4220-bd70-353bc9fd019d",
      "m1": "خروش آمد از چشمهٔ آب شور",
      "m2": "که ای آرزومند چندین مشور",
      "verse_number": 12
    },
    {
      "id": "adbf3880-d142-49ff-bbef-f1c6fc54d774",
      "m1": "بسی چیز دیدی که آن کس ندید",
      "m2": "عنان را کنون باز باید کشید",
      "verse_number": 13
    },
    {
      "id": "cd3e23a2-fcc0-4c5f-96b3-997ab200e560",
      "m1": "کنون زندگانیت کوتاه گشت",
      "m2": "سر تخت شاهیت بیشاه گشت",
      "verse_number": 14
    },
    {
      "id": "b6bb39a9-372d-4d29-a3a3-cce4d1765098",
      "m1": "سکندر بترسید و برگشت زود",
      "m2": "به لشکرگه آمد به کردار دود",
      "verse_number": 15
    },
    {
      "id": "46d63ecb-104f-464e-b456-b1f8421912ca",
      "m1": "وزان جایگه تیز لشکر براند",
      "m2": "خروشان بسی نام یزدان بخواند",
      "verse_number": 16
    },
    {
      "id": "c03dd32f-976f-4e7c-bf2c-5af625953f5c",
      "m1": "ازان کوه راه بیابان گرفت",
      "m2": "غمی گشت و اندیشهٔ جان گرفت",
      "verse_number": 17
    },
    {
      "id": "173e86f9-4ab4-47ce-85bb-adb272738a7f",
      "m1": "همی راند پر درد و گریان ز جای",
      "m2": "سپاه از پس و پیش او رهنمای",
      "verse_number": 18
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 18
  }
}