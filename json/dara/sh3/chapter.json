{
  "id": "8a55e35d-5223-40d8-8b4c-e88276320b3f",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "d03fe58a-c77d-4caa-9402-59b79251017d",
      "m1": "سکندر چو بشنید کامد سپاه",
      "m2": "پذیره شدن را بپیمود راه",
      "verse_number": 1
    },
    {
      "id": "a779f01e-7584-4393-8f30-e935d807a62b",
      "m1": "میان دو لشکر دو فرسنگ ماند",
      "m2": "سکندر گرانمایگان را بخواند",
      "verse_number": 2
    },
    {
      "id": "4ef2e573-f5f1-42f0-9392-5cc207f9229f",
      "m1": "چو سیر آمد از گفتهٔ رهنمای",
      "m2": "چنین گفت کاکنون جزین نیست رای",
      "verse_number": 3
    },
    {
      "id": "886e794d-de4b-4134-babb-a8ccc1831e49",
      "m1": "که من چون فرستادهای پیش اوی",
      "m2": "شوم برگرایم کم و بیش اوی",
      "verse_number": 4
    },
    {
      "id": "fa8f2496-000f-4fcb-aa1a-5d20ae9cb7df",
      "m1": "کمر خواست پرگوهر شاهوار",
      "m2": "یکی خسروی جامهٔ زرنگار",
      "verse_number": 5
    },
    {
      "id": "1d2ee4ca-4493-4ed5-af9a-75df69b6b5cf",
      "m1": "ببردند بالای زرین ستام",
      "m2": "به زین اندرون تیغ زرین نیام",
      "verse_number": 6
    },
    {
      "id": "855cd4e1-d349-4bb4-92ec-f04916455775",
      "m1": "سواری ده از رومیان برگزید",
      "m2": "که دانند هرگونه گفت و شنید",
      "verse_number": 7
    },
    {
      "id": "9de550a7-c1ae-44e4-b705-2f2b7564eb70",
      "m1": "ز لشکر بیامد سپیده دمان",
      "m2": "خود و نامداران ابا ترجمان",
      "verse_number": 8
    },
    {
      "id": "fa1b54a0-80bb-45e4-89e6-ad2289060cad",
      "m1": "چو آمد به نزدیک دارا فراز",
      "m2": "پیاده شد و برد پیشش نماز",
      "verse_number": 9
    },
    {
      "id": "1bbf0d7b-02fe-4f04-86c8-983ba4261471",
      "m1": "جهاندار دارا مر او را بخواند",
      "m2": "بپرسید و بر زیر گاهش نشاند",
      "verse_number": 10
    },
    {
      "id": "3148dca7-a692-4d05-82f2-bad67eb57480",
      "m1": "همه نامداران فروماندند",
      "m2": "بروبر نهان آفرین خواندند",
      "verse_number": 11
    },
    {
      "id": "151c411e-bc08-4df3-9d18-34115724aa00",
      "m1": "ز دیدار آن فر و فرهنگ او",
      "m2": "ز بالا و از شاخ و آهنگ او",
      "verse_number": 12
    },
    {
      "id": "1d920e9c-5ca1-4fbc-bfa3-b947fe3ff294",
      "m1": "همانگه چو بنشست بر پای خاست",
      "m2": "پیام سکندر بیاراست راست",
      "verse_number": 13
    },
    {
      "id": "8a252eaa-f55a-41df-b69a-64c9b6af32de",
      "m1": "نخست آفرین کرد بر شهریار",
      "m2": "که جاوید بادا سر تاجدار",
      "verse_number": 14
    },
    {
      "id": "a9e49f49-f6e6-402b-bf58-1b941d45edac",
      "m1": "سکندر چنین گفت کای نیکنام",
      "m2": "به گیتی بهرجای گسترده کام",
      "verse_number": 15
    },
    {
      "id": "9752a8a8-0b5d-4f42-8e92-23aac32fda86",
      "m1": "مرا آرزو نیست با شاه جنگ",
      "m2": "نه بر بوم ایران گرفتن درنگ",
      "verse_number": 16
    },
    {
      "id": "250721ec-bdc4-4431-978e-03cef9cf3a69",
      "m1": "برآنم که گرد زمین اندکی",
      "m2": "بگردم ببینم جهان را یکی",
      "verse_number": 17
    },
    {
      "id": "2b1cf82d-466b-491c-aa6a-b4423e297071",
      "m1": "همه راستی خواهم و نیکویی",
      "m2": "به ویژه که سالار ایران تویی",
      "verse_number": 18
    },
    {
      "id": "c8650d06-54ad-4124-b73f-e15a86882124",
      "m1": "اگر خاک داری تو از من دریغ",
      "m2": "نشاید سپردن هوا را چو میغ",
      "verse_number": 19
    },
    {
      "id": "29c75fda-c04f-4f83-95c9-70a7b3dba103",
      "m1": "چنین با سپاه آمدی پیش من",
      "m2": "نه آگاهی از رای کم بیش من",
      "verse_number": 20
    },
    {
      "id": "bc5199c3-b9d2-4dbf-a1e6-4adfee1a1d28",
      "m1": "چو رزم آوری باتو رزم آورم",
      "m2": "ازین بوم بیرزم برنگذرم",
      "verse_number": 21
    },
    {
      "id": "62447f91-5982-437e-b1bd-dfb0e435fb2f",
      "m1": "گزین کن یکی روزگار نبرد",
      "m2": "برین باش و زین آرزو برمگرد",
      "verse_number": 22
    },
    {
      "id": "b7c2e982-4c73-4b3a-859b-5c6def8ae3c7",
      "m1": "که من سر نپیچم ز جنگ سران",
      "m2": "وگر چند باشد سپاهی گران",
      "verse_number": 23
    },
    {
      "id": "c09f9af2-3b39-43b1-a434-82b005e10bb2",
      "m1": "چو دارا بدید آن دل و رای او",
      "m2": "سخن گفتن و فر و بالای او",
      "verse_number": 24
    },
    {
      "id": "0b6c6f47-1198-4332-ada7-785808b25ad8",
      "m1": "تو گفتی که داراست بر تخت عاج",
      "m2": "ابا یاره و طوق و با فر و تاج",
      "verse_number": 25
    },
    {
      "id": "a9aaea40-1275-47ef-b516-cf869c7829d2",
      "m1": "بدو گفت نام و نژاد تو چیست",
      "m2": "که بر فر و شاخت نشان کییست",
      "verse_number": 26
    },
    {
      "id": "be5aa746-a631-40e9-919b-ce5c046672fb",
      "m1": "از اندازهٔ کهتران برتری",
      "m2": "من ایدون گمانم که اسکندری",
      "verse_number": 27
    },
    {
      "id": "cc956b4e-7117-4ed3-ba15-0d21e5d7a35a",
      "m1": "بدین فر و بالا و گفتار و چهر",
      "m2": "مگر تخت را پروریدت سپهر",
      "verse_number": 28
    },
    {
      "id": "342866cc-0082-4ce8-97fc-23c9a51e5ca3",
      "m1": "چنین داد پاسخ که این کس نکرد",
      "m2": "نه در آشتی و نه اندر نبرد",
      "verse_number": 29
    },
    {
      "id": "0c0c51e6-0af3-4abc-aac8-5dcb7614f273",
      "m1": "نه گویندگان بر درش کمترند",
      "m2": "که بر تارک بخردان افسرند",
      "verse_number": 30
    },
    {
      "id": "ae7ae3b4-2bb3-4744-9e7d-e0e443e2d889",
      "m1": "کجا خود پیام آرد از خویشتن",
      "m2": "چنان شهریاری سر انجمن",
      "verse_number": 31
    },
    {
      "id": "aee59876-60c2-45e0-96b4-306739281fcd",
      "m1": "سکندر بدان مایه دارد خرد",
      "m2": "که از رای پیشینگان بگذرد",
      "verse_number": 32
    },
    {
      "id": "5420ee2a-4fb4-45e9-b1de-fc927d47706d",
      "m1": "پیامم سپهبد بدین گونه داد",
      "m2": "بگفتم به شاه آنچ او کرد یاد",
      "verse_number": 33
    },
    {
      "id": "d0f7a5b7-2074-49fa-ba0a-c0fe8a7ac6e0",
      "m1": "بیاراستندش یکی جایگاه",
      "m2": "چنانچون بود درخور پایگاه",
      "verse_number": 34
    },
    {
      "id": "3b319010-3204-4c48-9611-b04fab757f0a",
      "m1": "سپهدار ایران چو بنهاد خوان",
      "m2": "به سالار فرمود کو را بخوان",
      "verse_number": 35
    },
    {
      "id": "73d25497-067e-46df-9c8c-5e3518c6474c",
      "m1": "چو نان خورده شد مجلس آراستند",
      "m2": "می و رود و رامشگران خواستند",
      "verse_number": 36
    },
    {
      "id": "2854a1fa-baf7-4c25-90f1-6a2c04b0448d",
      "m1": "سکندر چو خوردی می خوشگوار",
      "m2": "نهادی سبک جام را بر کنار",
      "verse_number": 37
    },
    {
      "id": "0b2dd451-a9c2-431f-946c-f0792bd6f5bc",
      "m1": "چنین تا می و جام چندی بگشت",
      "m2": "نهادن ز اندازه اندر گذشت",
      "verse_number": 38
    },
    {
      "id": "91a2248e-d539-4cfa-8385-a930a63ee7fa",
      "m1": "دهنده بیامد به دارا بگفت",
      "m2": "که رومی شد امروز با جام جفت",
      "verse_number": 39
    },
    {
      "id": "10fd0951-4ff1-4922-8bf5-ddb4596ef30a",
      "m1": "بفرمود تا زو بپرسند شاه",
      "m2": "که جام نبید از چه داری نگاه",
      "verse_number": 40
    },
    {
      "id": "0a78d544-75a6-4f53-94b8-2373df41064e",
      "m1": "بدو گفت ساقی که ای شیر فش",
      "m2": "چه داری همی جام زرین به کش",
      "verse_number": 41
    },
    {
      "id": "30996e57-6606-466a-8d16-5a55b18a2faf",
      "m1": "سکندر چنین داد پاسخ که جام",
      "m2": "فرستاده را باشد ای نیکنام",
      "verse_number": 42
    },
    {
      "id": "1325e09e-7a0d-417c-b60c-038a4b6a835d",
      "m1": "گر آیین ایران جز اینست راه",
      "m2": "ببر جام زرین سوی گنج شاه",
      "verse_number": 43
    },
    {
      "id": "09447c0b-249b-44fb-8e53-ad84d66c9c9f",
      "m1": "بخندید از آیین او شهریار",
      "m2": "یکی جام پرگوهر شاهوار",
      "verse_number": 44
    },
    {
      "id": "c655961b-5c4c-40a9-bdde-b52f55b8dba2",
      "m1": "بفرمود تا بر کفش برنهند",
      "m2": "یکی سرخ یاقوت بر سر نهند",
      "verse_number": 45
    },
    {
      "id": "d77b6aa4-5dd3-4097-a68b-0d28be6a7e4a",
      "m1": "هماندر زمان باژ خواهان روم",
      "m2": "کجا رفته بودند زان مرز و بوم",
      "verse_number": 46
    },
    {
      "id": "3913c7b8-bdd2-45ce-b7cc-29f3074f8294",
      "m1": "ز خانه بدان بزمگاه آمدند",
      "m2": "خرامان به نزدیک شاه آمدند",
      "verse_number": 47
    },
    {
      "id": "33f3fa12-64c6-40bd-a0f3-cd1977e01ea2",
      "m1": "فرستاده روی سکندر بدید",
      "m2": "بر شاه رفت آفرین گسترید",
      "verse_number": 48
    },
    {
      "id": "5b026020-2ffe-414b-a8ee-debe6e84eaed",
      "m1": "بدو گفت کاین مهتر اسکندرست",
      "m2": "که بر تخت با گرز و با افسرست",
      "verse_number": 49
    },
    {
      "id": "8fab63b4-64f7-4b64-a341-0c2f1bb1379e",
      "m1": "بدانگه که ما را بفرمود شاه",
      "m2": "برفتیم نزدیک او باژخواه",
      "verse_number": 50
    },
    {
      "id": "6e1cb514-ac4e-440a-902f-641cc5ce4b2e",
      "m1": "برآشفت و ما را بدان خوار کرد",
      "m2": "به گفتار با شاه پیکار کرد",
      "verse_number": 51
    },
    {
      "id": "158580eb-0752-4e59-a3e8-fd66ab172cd8",
      "m1": "چو از پادشاهیش بگریختم",
      "m2": "شب تیره اسپان برانگیختم",
      "verse_number": 52
    },
    {
      "id": "e553f114-d270-45bf-be2a-253bbd2f0b32",
      "m1": "ندیدیم مانندهٔ او به روم",
      "m2": "دلیر آمدست اندرین مرز و بوم",
      "verse_number": 53
    },
    {
      "id": "e637ab2c-6fd2-4416-8593-881a824d139d",
      "m1": "همی برگراید سپاه ترا",
      "m2": "همان گنج و تخت و کلاه ترا",
      "verse_number": 54
    },
    {
      "id": "096c44fa-cb0c-4c9f-9edb-565bcc5d11f5",
      "m1": "چو گفت فرستاده بشنید شاه",
      "m2": "فزون کرد سوی سکندر نگاه",
      "verse_number": 55
    },
    {
      "id": "d066c878-e909-416c-b719-c3dda78a18b9",
      "m1": "سکندر بدانست کاندر نهان",
      "m2": "چه گفتند با شهریار جهان",
      "verse_number": 56
    },
    {
      "id": "b218b5c5-cc3c-4d35-a528-c4c8b6aa329f",
      "m1": "همی بود تا تیرهتر گشت روز",
      "m2": "سوی باختر گشت گیتیفروز",
      "verse_number": 57
    },
    {
      "id": "2db46663-3e47-4e3c-b22f-a938e485857d",
      "m1": "بیامد به دهلیز پردهسرای",
      "m2": "دلاور به اسپ اندر آورد پای",
      "verse_number": 58
    },
    {
      "id": "8a76fbc3-4ee5-4969-970c-e26f58cc4028",
      "m1": "چنین گفت پس با سواران خویش",
      "m2": "بلنداختر و نامداران خویش",
      "verse_number": 59
    },
    {
      "id": "2e6a7250-459d-4dfd-bdd1-2e62839817e8",
      "m1": "که ما را کنون جان به اسپ اندرست",
      "m2": "چو سستی کند باد ماند به دست",
      "verse_number": 60
    },
    {
      "id": "504b4721-3c79-420f-aa1b-560fc15ea754",
      "m1": "همه بادپایان برانگیختند",
      "m2": "ز پیش جهاندار بگریختند",
      "verse_number": 61
    },
    {
      "id": "e37ef82c-eaeb-416e-a96f-1b0e278d48b7",
      "m1": "چو دارا سر و افسر او ندید",
      "m2": "به تاریکی از چشم شد ناپدید",
      "verse_number": 62
    },
    {
      "id": "16e221ae-1aec-46d2-a25c-9a3181c5edf4",
      "m1": "نگهبان فرستاد هم در زمان",
      "m2": "به نزدیکی خیمهٔ بدگمان",
      "verse_number": 63
    },
    {
      "id": "579fb3b3-e185-4329-96cd-c6615a7cdb6d",
      "m1": "چو رفتند بیداردل رفته بود",
      "m2": "نه بخت چنان پادشا خفته بود",
      "verse_number": 64
    },
    {
      "id": "191c4cb1-abfa-46ec-8a6b-56b98353885c",
      "m1": "پس او فرستاد دارا سوار",
      "m2": "دلیران و پرخاشجویان هزار",
      "verse_number": 65
    },
    {
      "id": "1fdef3b3-a399-4391-a82a-7cbe69a9be76",
      "m1": "چو باد از پس او همی تاختند",
      "m2": "شب تیرهٔ بد راه نشناختند",
      "verse_number": 66
    },
    {
      "id": "4bcaad1d-3f89-4e09-947c-7d87f6c1a101",
      "m1": "طلایه بدیدند گشتند باز",
      "m2": "نبد سود جز رنج و راه دراز",
      "verse_number": 67
    },
    {
      "id": "cb2dfb91-77c0-4b6d-8eb2-760757673b19",
      "m1": "چو اسکندر آمد به پردهسرای",
      "m2": "برفتند گردان رومی ز جای",
      "verse_number": 68
    },
    {
      "id": "0a13ff0a-7c39-4099-b406-32d1dda2d0c3",
      "m1": "بدیدند شب شاه را شادکام",
      "m2": "به پیش اندرون پرگهر چار جام",
      "verse_number": 69
    },
    {
      "id": "06643359-64f0-4c0a-89c3-daf44f350b65",
      "m1": "به گردان چنین گفت کاباد بید",
      "m2": "بدین فرخی فال ما شاد بید",
      "verse_number": 70
    },
    {
      "id": "390985c2-29b6-4ca6-a8b1-d7a9052b3e5f",
      "m1": "که این جام پیروزی جان ماست",
      "m2": "سر اختران زیر فرمان ماست",
      "verse_number": 71
    },
    {
      "id": "28448cf9-5199-49fc-87a1-0c9fd2bc8620",
      "m1": "هم از لشکرش برگرفتم شمار",
      "m2": "فراوان کم است از شنیده سوار",
      "verse_number": 72
    },
    {
      "id": "067423f6-f17c-4897-9a8d-49828dbef582",
      "m1": "همه جنگ را تیغها برکشید",
      "m2": "وزین دشت هامون سر اندرکشید",
      "verse_number": 73
    },
    {
      "id": "52ee4d92-81a7-4260-8151-c0e8440ae3d3",
      "m1": "چو در جنگ تن را به رنج آورید",
      "m2": "ازان رنج شاهی و گنج آورید",
      "verse_number": 74
    },
    {
      "id": "b86f9c5e-85f6-4ad7-a79e-f6b6da5494b7",
      "m1": "جهان آفریننده یار منست",
      "m2": "سر اختر اندر کنار منست",
      "verse_number": 75
    },
    {
      "id": "93fdda6a-f7e8-4835-a552-3840ea2dce7c",
      "m1": "بزرگان برو خواندند آفرین",
      "m2": "که آباد بادا به قیصر زمین",
      "verse_number": 76
    },
    {
      "id": "8418a4b4-1997-449a-9fdd-51db655f3a6b",
