{
  "id": "b3d08f56-7013-432e-b28f-1d3d5e42189e",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "7c76eb92-3636-428f-be77-03c10cd0dbb3",
      "m1": "دبیر جهاندیده را پیش خواند",
      "m2": "بیاورد نزدیک گاهش نشاند",
      "verse_number": 1
    },
    {
      "id": "f86fc4d6-de25-4f58-aa6e-230d28911311",
      "m1": "یکی نامه بنوشت با داغ و درد",
      "m2": "دو دیده پر از خون و رخ لاژورد",
      "verse_number": 2
    },
    {
      "id": "7b5d2d69-ea7c-4125-b609-e5169ff333c8",
      "m1": "ز دارای داراب بن اردشیر",
      "m2": "سوی قیصر اسکندر شهرگیر",
      "verse_number": 3
    },
    {
      "id": "2ae7b074-bd5a-4c62-9ac6-7f17637afac1",
      "m1": "نخست آفرین کرد بر کردگار",
      "m2": "که زو دید نیک و بد روزگار",
      "verse_number": 4
    },
    {
      "id": "1fcdd8a0-ba73-46f3-a271-4d57539e3674",
      "m1": "دگر گفت کز گردش آسمان",
      "m2": "خردمند برنگذرد بیگمان",
      "verse_number": 5
    },
    {
      "id": "42393597-221b-41df-b0db-2727d16c5a1a",
      "m1": "کزو شادمانیم و زو ناشکیب",
      "m2": "گهی در فراز و گهی در نشیب",
      "verse_number": 6
    },
    {
      "id": "e33c4399-a20d-466c-88f2-4a619120fc92",
      "m1": "نه مردی بد این رزم ما با سپاه",
      "m2": "مگر بخشش و گردش هور و ماه",
      "verse_number": 7
    },
    {
      "id": "039b1b6c-cb6e-4e00-a3dc-f384672edfb5",
      "m1": "کنون بودنی بود و ما دل به درد",
      "m2": "چه داریم ازین گنبد لاژورد",
      "verse_number": 8
    },
    {
      "id": "83ec85ef-dfcc-4416-9f91-27939ea009f8",
      "m1": "کنون گر بسازی و پیمان کنی",
      "m2": "دل از جنگ ایران پشیمان کنی",
      "verse_number": 9
    },
    {
      "id": "a8b3bd57-de33-4ac7-95d5-c5dba5ab6721",
      "m1": "همه گنج گشتاسپ و اسفندیار",
      "m2": "همان یاره و تاج گوهرنگار",
      "verse_number": 10
    },
    {
      "id": "7e65486d-3118-4776-b8f8-16ce540993b0",
      "m1": "فرستم به گنج تو از گنج خویش",
      "m2": "همان نیز ورزیدهٔ رنج خویش",
      "verse_number": 11
    },
    {
      "id": "f71f3ef4-c69c-46cd-9a71-9c8a0a5768d5",
      "m1": "همان مر ترا یار باشم به جنگ",
      "m2": "به روز و شبانت نسازم درنگ",
      "verse_number": 12
    },
    {
      "id": "dc807c48-43d4-4fcc-a693-cce60e55fcb2",
      "m1": "کسی را که داری ز پیوند من",
      "m2": "ز پوشیدهرویان و فرزند من",
      "verse_number": 13
    },
    {
      "id": "6aa2077c-f842-4ed6-8984-72e0989d9a17",
      "m1": "بر من فرستی نباشد شگفت",
      "m2": "جهانجوی را کین نباید گرفت",
      "verse_number": 14
    },
    {
      "id": "f4d920f0-8d08-41d2-ae3b-8fef146b8324",
      "m1": "ز پوشیدهرویان به جز سرزنش",
      "m2": "نباشد ز شاهان برتر منش",
      "verse_number": 15
    },
    {
      "id": "41eb39bb-67e9-4008-b628-7db1e8ae99db",
      "m1": "چو نامه بخواند خداوند هوش",
      "m2": "بیاراید این رای پاسخنیوش",
      "verse_number": 16
    },
    {
      "id": "483d7818-204e-4cdd-8005-c21cd09855d8",
      "m1": "هیونی ز کرمان بیامد دوان",
      "m2": "به نزدیک اسکندر بدگمان",
      "verse_number": 17
    },
    {
      "id": "79ff0157-7afe-4e7b-b127-7e68be804e20",
      "m1": "سکندر چو آن نامه برخواند گفت",
      "m2": "که با جان دارا خرد باد جفت",
      "verse_number": 18
    },
    {
      "id": "5c673fe6-5139-4ee5-bed6-9fc24dbb72f6",
      "m1": "کسی کو گراید به پیوند اوی",
      "m2": "به پوشیدهرویان و فرزند اوی",
      "verse_number": 19
    },
    {
      "id": "7d5a0b19-b779-4073-b345-e5070efdd122",
      "m1": "نبیند مگر تخته گور تخت",
      "m2": "گر آویخته سر ز شاخ درخت",
      "verse_number": 20
    },
    {
      "id": "78aaf3d4-276f-4d5d-b39c-f9c4716c4575",
      "m1": "همه به اصفهانند بیدرد و رنج",
      "m2": "ازیشان مبادا که خواهیم گنج",
      "verse_number": 21
    },
    {
      "id": "ad66c80e-1bdf-401a-a36a-54138dd1072a",
      "m1": "تو گر سوی ایران خرامی رواست",
      "m2": "همه پادشاهی سراسر تراست",
      "verse_number": 22
    },
    {
      "id": "1e9cb5d1-9b19-49d2-bccb-23797ceb4399",
      "m1": "ز فرمان تو یک زمان نگذریم",
      "m2": "نفس نیز بیراه تو نشمریم",
      "verse_number": 23
    },
    {
      "id": "c32c555a-3e36-4bfe-a6b3-ff4cdd497234",
      "m1": "بکردار کشتی بیامد هیون",
      "m2": "دل و دیدهٔ تاجور پر ز خون",
      "verse_number": 24
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 24
  }
}