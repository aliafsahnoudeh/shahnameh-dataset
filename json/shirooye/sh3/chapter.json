{
  "id": "66dde4ae-1bd8-44fc-bcbf-5fd039822546",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "1f4bb38a-06f6-46b7-84f9-1fff5d9bce0c",
      "m1": "چوبشنید شیروی بگریست سخت",
      "m2": "دلش گشت ترسان ازان تاج وتخت",
      "verse_number": 1
    },
    {
      "id": "6eb67dc4-f2a9-4b80-b9c1-51d361c50be2",
      "m1": "چوازپیش برخاستند آن گروه",
      "m2": "که او راهمیداشتندی ستوه",
      "verse_number": 2
    },
    {
      "id": "001634cf-a026-4a60-a2f5-2ecc2a4d5d6f",
      "m1": "به گفتار زشت و به خون پدر",
      "m2": "جوان را همیسوختندی جگر",
      "verse_number": 3
    },
    {
      "id": "296ec161-b662-4e14-a0f8-d7c77706170f",
      "m1": "فرود آمد از تخت شاهی قباد",
      "m2": "دودست گرامی به سر برنهاد",
      "verse_number": 4
    },
    {
      "id": "69a76dc7-c59a-4730-a5f0-5789e4f3d833",
      "m1": "ز مژگان همی بر برش خون چکید",
      "m2": "چو آگاهی او به دشمن رسید",
      "verse_number": 5
    },
    {
      "id": "a0afb473-140d-485f-97fa-0ed035482f4d",
      "m1": "چوبرزد سرازتیره کوه آفتاب",
      "m2": "بد اندیش را سر بر آمد ز خواب",
      "verse_number": 6
    },
    {
      "id": "de64a00b-e108-480f-9292-7f95ad5b6aa1",
      "m1": "برفتند یکسر سوی بارگاه",
      "m2": "چو بشنید بنشست برگاه شاه",
      "verse_number": 7
    },
    {
      "id": "cb8c228f-730d-45b1-9228-8252289cfd41",
      "m1": "برفتند گردنکشان پیش او",
      "m2": "ز گردان بیگانه و خویش او",
      "verse_number": 8
    },
    {
      "id": "7a7fa6b5-bd27-4dc0-89fb-69053a00cae2",
      "m1": "نشستند با روی کرده دژم",
      "m2": "زبانش نجنبید بر بیش و کم",
      "verse_number": 9
    },
    {
      "id": "4b655322-5c1d-44a0-ad3e-9aa211a4295d",
      "m1": "بدانست کایشان بدانسان دژم",
      "m2": "نشسته چرایند بادرد وغم",
      "verse_number": 10
    },
    {
      "id": "e0e3033c-f951-490e-9104-0b0ee8666378",
      "m1": "بدیشان چنین گفت کان شهریار",
      "m2": "کجا باشد از پشت پروردگار",
      "verse_number": 11
    },
    {
      "id": "ee042809-50ab-4954-a68a-c5c93f9c3360",
      "m1": "که غمگین نباشد به درد پدر",
      "m2": "نخوانمش جز بد تن و بد گهر",
      "verse_number": 12
    },
    {
      "id": "b015e663-1a77-415e-845a-60f00a84f657",
      "m1": "نباید که دارد بدو کس امید",
      "m2": "که او پودهتر باشد از پوده بید",
      "verse_number": 13
    },
    {
      "id": "dd6399fa-30d9-4a7b-b043-cae75be65299",
      "m1": "چنین یافت پاسخ زمرد گناه",
      "m2": "که هرکس که گوید پرستم دو شاه",
      "verse_number": 14
    },
    {
      "id": "76545154-7f72-4790-b254-c7fa3c5fa7ef",
      "m1": "تو او رابه دل نا هشیوار خوان",
      "m2": "وگر ارجمندی بود خوار خوان",
      "verse_number": 15
    },
    {
      "id": "581b626e-2ad1-4764-bf64-a3bae3b08268",
      "m1": "چنین داد شیروی پاسخ که شاه",
      "m2": "چو بی گنج باشد نیرزد سپاه",
      "verse_number": 16
    },
    {
      "id": "2c36a737-ec00-443b-8586-e5ef390ae692",
      "m1": "سخن خوب رانیم یک ماه نیز",
      "m2": "ز راه درشتی نگوییم چیز",
      "verse_number": 17
    },
    {
      "id": "b73b24ad-5192-4b13-895d-382127445cfd",
      "m1": "مگر شاد باشیم ز اندرز او",
      "m2": "که گنجست سرتاسر این مرز او",
      "verse_number": 18
    },
    {
      "id": "8afe15f1-2c60-44c6-909b-fdc202acff77",
      "m1": "چو پاسخ شنیدند برخاستند",
      "m2": "سوی خانهها رفتن آراستند",
      "verse_number": 19
    },
    {
      "id": "1e65eb1c-5480-43ca-81ef-942c73338eed",
      "m1": "به خوالیگران شاه شیروی گفت",
      "m2": "که چیزی ز خسرو نباید نهفت",
      "verse_number": 20
    },
    {
      "id": "c0a35607-3713-4a8e-bb44-610a7a45f3e3",
      "m1": "به پیشش همه خوان زرین نهید",
      "m2": "خورشها بر و چرب و شیرین نهید",
      "verse_number": 21
    },
    {
      "id": "aa8bea43-b0a8-448e-bd2a-6182efd638c8",
      "m1": "برنده همیبرد و خسرو نخورد",
      "m2": "ز چیزی که دیدی بخوان گرم و سرد",
      "verse_number": 22
    },
    {
      "id": "4d072615-1827-4146-b188-0f5f71298dfb",
      "m1": "همه خوردش از دست شیرین بدی",
      "m2": "که شیرین بخوردنش غمگین بدی",
      "verse_number": 23
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
