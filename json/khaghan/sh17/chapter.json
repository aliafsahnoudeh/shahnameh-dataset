{
  "id": "cfaa89da-2853-420d-8c92-e3f40e16468c",
  "title": "بخش ۱۷",
  "verses": [
    {
      "id": "a5c819d3-ef56-4595-9b01-339d61cc71fe",
      "m1": "شتر یافت چندان و چندان گله",
      "m2": "که از بارگی شد سپه بیگله",
      "verse_number": 1
    },
    {
      "id": "7bf893d4-647e-42fa-aaab-5fb739ac5414",
      "m1": "ز توران سپه برنهادند رخت",
      "m2": "سلیح گرانمایه و تاج و تخت",
      "verse_number": 2
    },
    {
      "id": "bb6a679b-db9b-4403-82ca-8f75e13422b2",
      "m1": "خروش آمد و نالهٔ گاودم",
      "m2": "جرس برکشیدند و رویینه خم",
      "verse_number": 3
    },
    {
      "id": "00dfe438-112b-48c4-a4d5-8ffe75fd8b3e",
      "m1": "سوی شهر ایران نهادند روی",
      "m2": "سپاهی بران گونه با رنگ و بوی",
      "verse_number": 4
    },
    {
      "id": "68e5a7f5-81c9-4b4f-a2bc-d52cef723800",
      "m1": "چو آگاهی آمد ز رستم بشاه",
      "m2": "خروش آمد از شهر وز بارگاه",
      "verse_number": 5
    },
    {
      "id": "b2ac8e1a-2677-4905-82d2-cc024783cbd1",
      "m1": "از ایران تبیره برآمد بابر",
      "m2": "که آمد خداوند گوپال و ببر",
      "verse_number": 6
    },
    {
      "id": "348bf007-e09e-491d-9921-8580b01cddae",
      "m1": "یکی شادمانی بد اندر جهان",
      "m2": "خنیده میان کهان و مهان",
      "verse_number": 7
    },
    {
      "id": "d62a3e8b-7f7e-48b1-a033-356c6a0954d4",
      "m1": "دل شاه شد چون بهشت برین",
      "m2": "همی خواند بر کردگار آفرین",
      "verse_number": 8
    },
    {
      "id": "ef3f5aa0-43ce-4e7e-b1e7-87c49a3584fc",
      "m1": "بفرمود تا پیل بردند پیش",
      "m2": "بجنبید کیخسرو از جای خویش",
      "verse_number": 9
    },
    {
      "id": "8b7a9875-5cd4-4052-9c80-2b498a511ca6",
      "m1": "جهانی بهآیین شد آراسته",
      "m2": "می و رود و رامشگر و خواسته",
      "verse_number": 10
    },
    {
      "id": "9baafa3a-2176-442f-a7b8-75d6776d01ae",
      "m1": "تبیره برآمد ز هر جای و نای",
      "m2": "چو شاه جهان اندر آمد ز جای",
      "verse_number": 11
    },
    {
      "id": "f52182c8-1236-4100-8a89-26b77c0835fe",
      "m1": "همه روی پیل از کران تا کران",
      "m2": "پر از مشک بود و می و زعفران",
      "verse_number": 12
    },
    {
      "id": "0f76aa14-2a1e-47fb-9ac9-bc7fb0f8cdb0",
      "m1": "ز افسر سر پیلبان پرنگار",
      "m2": "ز گوش اندر آویخته گوشوار",
      "verse_number": 13
    },
    {
      "id": "b3a73e7e-ea5e-477f-a9cd-109137d51806",
      "m1": "بسی زعفران و درم ریختند",
      "m2": "ز بر مشک و عنبر همی بیختند",
      "verse_number": 14
    },
    {
      "id": "907ae8ff-a747-4dba-8ea0-3546f526ae1f",
      "m1": "همه شهر آوای رامشگران",
      "m2": "نشسته ز هر سو کران تا کران",
      "verse_number": 15
    },
    {
      "id": "b607d8bb-7779-41a9-a2a6-b327bf160ed5",
      "m1": "چنان بد جهان را ز شادی و داد",
      "m2": "که گیتی روان را دوامست و شاد",
      "verse_number": 16
    },
    {
      "id": "71851804-5095-4c94-9820-9e6202c3f974",
      "m1": "تهمتن چو تاج سرافراز دید",
      "m2": "جهانی سراسر پرآواز دید",
      "verse_number": 17
    },
    {
      "id": "5b63ec83-a639-4299-b603-38891355bdc7",
      "m1": "فرود آمد و برد پیشش نماز",
      "m2": "بپرسید خسرو ز راه دراز",
      "verse_number": 18
    },
    {
      "id": "d480001c-ae98-43ae-9f03-16966dfacf2e",
      "m1": "گرفتش بآغوش در شاه تنگ",
      "m2": "چنین تا برآمد زمانی درنگ",
      "verse_number": 19
    },
    {
      "id": "08849d6d-622c-45b3-8719-e8dd3008c5c5",
      "m1": "همی آفرین خواند شاه جهان",
      "m2": "بران نامور موبد و پهلوان",
      "verse_number": 20
    },
    {
      "id": "ca9ebcb8-77ea-45d9-b2af-ebda0bb9b438",
      "m1": "بفرمود تا پیلتن برنشست",
      "m2": "گرفته همه راه دستش بدست",
      "verse_number": 21
    },
    {
      "id": "b006aa6c-4a45-4243-90ad-e2b374f195a5",
      "m1": "همی گفت چندین چرا ماندی",
      "m2": "که بر ما همی آتش افشاندی",
      "verse_number": 22
    },
    {
      "id": "814ecc06-8e0e-4d41-b2b3-650497bf4896",
      "m1": "چو طوس و فریبرز و گودرز و گیو",
      "m2": "چو رهام و گرگین و گردان نیو",
      "verse_number": 23
    },
    {
      "id": "1a1cf2e3-d390-4a21-90b2-de3bc50498de",
      "m1": "ز ره سوی ایوان شاه آمدند",
      "m2": "بدان نامور بارگاه آمدند",
      "verse_number": 24
    },
    {
      "id": "cdbe6f7a-1b0b-497e-bc28-4aec185ee11e",
      "m1": "نشست از بر تخت زر شهریار",
      "m2": "بنزدیک او رستم نامدار",
      "verse_number": 25
    },
    {
      "id": "57736995-0c81-4ca1-9a89-641442dbf6b0",
      "m1": "فریبرز و گودرز و رهام و گیو",
      "m2": "نشستند با نامداران نیو",
      "verse_number": 26
    },
    {
      "id": "a499cb47-45e0-4703-a1b3-1d7672c920c8",
      "m1": "سخن گفت کیخسرو از رزمگاه",
      "m2": "ازان رنج و پیگار توران سپاه",
      "verse_number": 27
    },
    {
      "id": "2cbbcc22-a786-41c3-a0af-a8ce7161bc86",
      "m1": "بدو گفت گودرز کای شهریار",
      "m2": "سخنها درازست زین کارزار",
      "verse_number": 28
    },
    {
      "id": "9eac1e38-b90e-4a8e-9795-bd830bc0f594",
      "m1": "می و جام و آرام باید نخست",
      "m2": "پس آنگاه ازین کار پرسی درست",
      "verse_number": 29
    },
    {
      "id": "90b9d69a-7b9e-4168-8a6b-778870244279",
      "m1": "نهادند خوان و بخندید شاه",
      "m2": "که ناهار بودی همانا به راه",
      "verse_number": 30
    },
    {
      "id": "d3672e36-042b-4dce-880f-81897bdbe827",
      "m1": "بخوان بر می آورد و رامشگران",
      "m2": "بپرسش گرفت از کران تا کران",
      "verse_number": 31
    },
    {
      "id": "4d203723-dff2-4c27-89d0-e484a5efeee5",
      "m1": "ز افراسیاب وز پولادوند",
      "m2": "ز کشتی و از تابداده کمند",
      "verse_number": 32
    },
    {
      "id": "cc54f17a-4338-4ea7-aa32-d05d8ecb8a8f",
      "m1": "بدو گفت گودرز کای شهریار",
      "m2": "ز مادر نزاید چو رستم سوار",
      "verse_number": 33
    },
    {
      "id": "9f9dfae8-0aac-40c8-b247-1f5210ebd3f7",
      "m1": "اگر دیو پیش آید ار اژدها",
      "m2": "ز چنگ درازش نیابد رها",
      "verse_number": 34
    },
    {
      "id": "4e7ffdfc-5da1-48f5-959e-e178c633b5e3",
      "m1": "هزار افرین باد بر شهریار",
      "m2": "بویژه برین شیردل نامدار",
      "verse_number": 35
    },
    {
      "id": "7f8efbf8-040e-4210-b2f8-86e30cc1d858",
      "m1": "بگفت آنچ کرد او بپولادوند",
      "m2": "ز کشتی و نیرنگ وز رنگ و بند",
      "verse_number": 36
    },
    {
      "id": "ca6cb5df-c1dd-46a0-b9c9-41e07233b954",
      "m1": "ز افگندن دیو وز کشتنش",
      "m2": "همان جنگ و پیگار و کین جستنش",
      "verse_number": 37
    },
    {
      "id": "41253edb-57f4-4768-bae7-21f281cc82af",
      "m1": "چو افتاد بر خاک زو رفت هوش",
      "m2": "برآمد ز گردان دیوان خروش",
      "verse_number": 38
    },
    {
      "id": "07bd3c13-e52f-4077-97bb-b28589814e4a",
      "m1": "چو آمد بهوش آن سرافراز دیو",
      "m2": "برآمد بناگاه زو یک غریو",
      "verse_number": 39
    },
    {
      "id": "bd3fd423-9079-415d-a208-034f782d4ffa",
      "m1": "همانگه درآمد باسپ و برفت",
      "m2": "همی بند جانش ز رستم بکفت",
      "verse_number": 40
    },
    {
      "id": "7bec468d-1a01-411d-93f6-fe13a1e6c2e4",
      "m1": "چنان شاد شد زان سخن تاجور",
      "m2": "که گفتی ز ایوان برآورد سر",
      "verse_number": 41
    },
    {
      "id": "926d02c1-aa8a-4363-a305-44ea1ded0683",
      "m1": "چنین داد پاسخ که ای پهلوان",
      "m2": "توی پیر و بیدار و روشنروان",
      "verse_number": 42
    },
    {
      "id": "dd2bc858-4134-400b-b36c-078ed5d9bc32",
      "m1": "کسی کش خرد باشد آموزگار",
      "m2": "نگه داردش گردش روزگار",
      "verse_number": 43
    },
    {
      "id": "97c012f5-0ffe-483c-b9a4-81c0e22dcf3c",
      "m1": "ازین پهلوان چشم بد دور باد",
      "m2": "همه زندگانیش در سور باد",
      "verse_number": 44
    },
    {
      "id": "748dcdcd-e08a-40ef-a16d-45dc6a80fda0",
      "m1": "همی بود یک هفته با می بدست",
      "m2": "ازو شادمان تاج و تخت و نشست",
      "verse_number": 45
    },
    {
      "id": "612bf922-3e39-458d-bd22-554e2221502d",
      "m1": "سخنهای رستم بنای و برود",
      "m2": "بگفتند بر پهلوانی سرود",
      "verse_number": 46
    },
    {
      "id": "f2e8c15d-40ea-40fb-ace2-3219111be3c9",
      "m1": "تهمتن بیک ماه نزدیک شاه",
      "m2": "همی بود با جام در پیشگاه",
      "verse_number": 47
    },
    {
      "id": "9b89fa3e-9b32-4fe2-bb10-be11a092aeeb",
      "m1": "ازان پس چنین گفت با شهریار",
      "m2": "که ای پرهنر نامور تاجدار",
      "verse_number": 48
    },
    {
      "id": "009baa74-a0bb-4dfb-918f-da29d4e9239d",
      "m1": "جهاندار با دانش و نیکخوست",
      "m2": "ولیکن مرا چهر زال آرزوست",
      "verse_number": 49
    },
    {
      "id": "c4bf62dd-f3df-4f9f-92b4-2ab03c0c029b",
      "m1": "در گنج بگشاد شاه جهان",
      "m2": "ز پرمایه چیزی که بودش نهان",
      "verse_number": 50
    },
    {
      "id": "0f129923-73c5-4119-b236-369427b228d4",
      "m1": "ز یاقوت وز تاج و انگشتری",
      "m2": "ز دینار وز جامهٔ ششتری",
      "verse_number": 51
    },
    {
      "id": "82742b18-6a3e-49c8-81a2-5073cf404bff",
      "m1": "پرستار با افسر و گوشوار",
      "m2": "همان جعد مویان سیمین عذار",
      "verse_number": 52
    },
    {
      "id": "3fa0bff9-dcf9-4a5d-85ed-10ceb85e3f59",
      "m1": "طبقهای زرین پر از مشک و عود",
      "m2": "دو نعلین زرین و زرین عمود",
      "verse_number": 53
    },
    {
      "id": "ba9efcd9-a04b-4d30-afd9-f76953c3db6f",
      "m1": "برو بافته گوهر شاهوار",
      "m2": "چنانچون بود در خور شهریار",
      "verse_number": 54
    },
    {
      "id": "ecdd18a0-2583-47d3-9da3-1d8f50305f41",
      "m1": "بنزد تهمتن فرستاد شاه",
      "m2": "دو منزل همی رفت با او براه",
      "verse_number": 55
    },
    {
      "id": "7b25a1bd-56b0-4fc0-bb40-4623612056a9",
      "m1": "چو خسرو غمی شد ز راه دراز",
      "m2": "فرود آمد و برد رستم نماز",
      "verse_number": 56
    },
    {
      "id": "6c661675-2e74-42a6-b82f-018ad5906f8d",
      "m1": "ورا کرد پدرود و ز ایران برفت",
      "m2": "سوی زابلستان خرامید تفت",
      "verse_number": 57
    },
    {
      "id": "bc6a7476-243e-450c-8cc9-8f8227f2b1d2",
      "m1": "سراسر جهان گشت بر شاه راست",
      "m2": "همی گشت گیتی بران سان که خواست",
      "verse_number": 58
    },
    {
      "id": "edee2b53-e6bb-4330-9190-6ab499da02e8",
      "m1": "سر آوردم این رزم کاموس نیز",
      "m2": "درازست و کم نیست زو یک پشیز",
      "verse_number": 59
    },
    {
      "id": "1980f689-0dc9-46e1-b15d-2c81f84bf081",
      "m1": "گر از داستان یک سخن کم بدی",
      "m2": "روان مرا جای ماتم بدی",
      "verse_number": 60
    },
    {
      "id": "bab5be3b-fd23-4988-a228-b33521108180",
      "m1": "دلم شادمان شد ز پولادوند",
      "m2": "که بفزود بر بند پولاد بند",
      "verse_number": 61
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 61
  }
}