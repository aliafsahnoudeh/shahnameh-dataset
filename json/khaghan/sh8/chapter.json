{
  "id": "84fa4773-af39-4183-a6b5-66742ec9ecf8",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "e65e0060-7372-47ce-afa9-63ca601bf5d2",
      "m1": "گهار گهانی بدان جایگاه",
      "m2": "گوی شیرفش با درفش سیاه",
      "verse_number": 1
    },
    {
      "id": "427f3fba-88a9-46dd-8757-cab5bd29c952",
      "m1": "برآشفت چون ترگ رستم بدید",
      "m2": "خروشی چو شیر ژیان برکشید",
      "verse_number": 2
    },
    {
      "id": "df25fce3-fe44-4066-a4bc-4afca2839c81",
      "m1": "بدو گفت من کین ترکان چین",
      "m2": "بخواهم ز سگزی برین دشت کین",
      "verse_number": 3
    },
    {
      "id": "4c19056e-c4d0-40e0-9f7c-48568045992c",
      "m1": "برانگیخت اسپ از میان سپاه",
      "m2": "بیامد بر پیلتن کینهخواه",
      "verse_number": 4
    },
    {
      "id": "05b86223-0a18-424e-9c0c-a2a3cafb5d6a",
      "m1": "ز نزدیک چون ترگ رستم بدید",
      "m2": "یکی باد سرد از جگر برکشید",
      "verse_number": 5
    },
    {
      "id": "7a243354-7731-4abe-aec9-0e7a8be14438",
      "m1": "بدل گفت پیکار با ژنده پیل",
      "m2": "چو غوطه است خوردن بدریای نیل",
      "verse_number": 6
    },
    {
      "id": "41d2d26b-08d8-48ab-8dc1-d006f957a417",
      "m1": "گریزی بهنگام با سر بجای",
      "m2": "به از رزم جستن بنام و برای",
      "verse_number": 7
    },
    {
      "id": "09d98488-d7d9-4d5b-b98b-d515e77c323d",
      "m1": "گریزان بیامد سوی قلبگاه",
      "m2": "برو بر نظاره ز هر سو سپاه",
      "verse_number": 8
    },
    {
      "id": "597e07ad-ae94-40e9-859e-9cbf487cb652",
      "m1": "درفش تهمتن میان گروه",
      "m2": "بسان درخت از بر تیغ کوه",
      "verse_number": 9
    },
    {
      "id": "33eba2a1-a73a-4ce4-8d9f-810e79d74f54",
      "m1": "همی تاخت رستم پس او چو گرد",
      "m2": "زمین لعل گشت و هوا لاژورد",
      "verse_number": 10
    },
    {
      "id": "88bbd8e7-f767-493e-8a33-277dc4da8f49",
      "m1": "گهار گهانی بترسید سخت",
      "m2": "کزو بود برگشتن تاج و تخت",
      "verse_number": 11
    },
    {
      "id": "cd0ceec3-8271-464f-b90f-01a87eb34372",
      "m1": "برآورد یک بانگ برسان کوس",
      "m2": "که بشنید آواز گودرز و طوس",
      "verse_number": 12
    },
    {
      "id": "2fcb3330-aaa4-4637-9023-b852a0e695b7",
      "m1": "همی خواست تا کارزاری کند",
      "m2": "ندانست کین بار زاری کند",
      "verse_number": 13
    },
    {
      "id": "c40a57a8-4577-4d2a-8faf-8298e6e4438d",
      "m1": "چه نیکو بود هر که خود را شناخت",
      "m2": "چرا تا ز دشمن ببایدش تاخت",
      "verse_number": 14
    },
    {
      "id": "3b461255-44c6-48cc-9551-515ff3e6ce75",
      "m1": "پس او گرفته گو پیلتن",
      "m2": "که هان چارهٔ گور کن گر کفن",
      "verse_number": 15
    },
    {
      "id": "923cc29c-534b-43e7-9b7d-844167385dd0",
      "m1": "یکی نیزه زد بر کمربند اوی",
      "m2": "بدرید خفتان و پیوند اوی",
      "verse_number": 16
    },
    {
      "id": "c95666c8-a7f3-4235-a852-651ed4c099c7",
      "m1": "بینداختش همچو برگ درخت",
      "m2": "که بر شاخ او بر زند باد سخت",
      "verse_number": 17
    },
    {
      "id": "86e89345-e579-4c24-8803-9b8e3934239e",
      "m1": "نگونسار کرد آن درفش کبود",
      "m2": "تو گفتی گهار گهانی نبود",
      "verse_number": 18
    },
    {
      "id": "c35f6b26-ff28-4527-86d8-a243747b124d",
      "m1": "بدیدند گردان که رستم چه کرد",
      "m2": "چپ و راست برخاست گرد نبرد",
      "verse_number": 19
    },
    {
      "id": "68939188-b81e-4da0-a2dd-45e33281c6e9",
      "m1": "درفش همایون ببردند و کوس",
      "m2": "بیامد سرافراز گودرز و طوس",
      "verse_number": 20
    },
    {
      "id": "ea62f8e5-4f8f-47e4-b5df-9681439447a6",
      "m1": "خروشی برآمد ز ایران سپاه",
      "m2": "چو پیروز شد گرد لشکر پناه",
      "verse_number": 21
    },
    {
      "id": "4683241c-d8e1-48f0-bb1c-54dcf1e9330a",
      "m1": "بفرمود رستم کز ایران سوار",
      "m2": "بر من فرستند صد نامدار",
      "verse_number": 22
    },
    {
      "id": "1419a6ea-6243-429f-bc74-769d4db8c728",
      "m1": "هم اکنون من آن پیل و آن تخت عاج",
      "m2": "همان یاره و سنج و آن طوق و تاج",
      "verse_number": 23
    },
    {
      "id": "9f1d5f73-0fdd-48ef-baf2-46df9f9d23ed",
      "m1": "ستانم ز چین و بایران دهم",
      "m2": "به پیروز شاه دلیران دهم",
      "verse_number": 24
    },
    {
      "id": "6329c3af-5c1b-4482-ba47-a4d05db79c4c",
      "m1": "از ایران بیامد همی صد سوار",
      "m2": "زرهدار با گُرزهٔ گاوسار",
      "verse_number": 25
    },
    {
      "id": "e062ce52-ec57-4b33-9d6d-cf2d1187c6ea",
      "m1": "چنین گفت رستم بایرانیان",
      "m2": "که یکسر ببندند کین را میان",
      "verse_number": 26
    },
    {
      "id": "cd3417e4-1167-4b6c-96cd-22e336eae154",
      "m1": "بجان و سر شاه و خورشید و ماه",
      "m2": "بخاک سیاوش بایران سپاه",
      "verse_number": 27
    },
    {
      "id": "e9ebd596-fd23-4dbc-97db-4dd00c6fd7cb",
      "m1": "بیزدان دادار جان آفرین",
      "m2": "که پیروزی آورد بر دشت کین",
      "verse_number": 28
    },
    {
      "id": "99ad7fb0-e332-4a0f-95e3-8450b9f32e62",
      "m1": "که گر نامداران ز ایران سپاه",
      "m2": "هزیمت پذیرد ز توران سپاه",
      "verse_number": 29
    },
    {
      "id": "c8df6423-319c-41f9-a8af-07568b1994b7",
      "m1": "سرش را ز تن برکنم در زمان",
      "m2": "ز خونش کنم جویهای روان",
      "verse_number": 30
    },
    {
      "id": "28c58310-30b3-4772-8a86-4ba9f1c93da2",
      "m1": "بدانست لشکر که او شیرخوست",
      "m2": "بچنگش سرین گوزن آرزوست",
      "verse_number": 31
    },
    {
      "id": "37a51273-bf0e-45b9-8520-a8374a9603ae",
      "m1": "همه سوی خاقان نهادند روی",
      "m2": "بنیزه شده هر یکی جنگ جوی",
      "verse_number": 32
    },
    {
      "id": "63457c82-fa8d-4336-a134-7f8d39a7314e",
      "m1": "تهمتن بپیش اندرون حمله برد",
      "m2": "عنان را برخش تگاور سپرد",
      "verse_number": 33
    },
    {
      "id": "64a2257c-e7c2-4d8d-bd0e-163c6b27dac9",
      "m1": "همی خون چکانید بر چرخ ماه",
      "m2": "ستاره نظاره بر آن رزمگاه",
      "verse_number": 34
    },
    {
      "id": "16791283-914f-4bee-b0b2-9079e93d864b",
      "m1": "ز بس گرد کز رزمگه بردمید",
      "m2": "چنان شد که کس روی هامون ندید",
      "verse_number": 35
    },
    {
      "id": "0f31c1e7-3a2d-40a1-8967-5e361514fcba",
      "m1": "ز بانگ سواران و زخم سنان",
      "m2": "نبود ایچ پیدا رکیب از عنان",
      "verse_number": 36
    },
    {
      "id": "d034e7c0-ff97-4904-95ec-643d6b604217",
      "m1": "هوا گشت چون روی زنگی سیاه",
      "m2": "ز کشته ندیدند بر دشت راه",
      "verse_number": 37
    },
    {
      "id": "8aadc496-ba4e-47ce-935e-6825c3e3c1a6",
      "m1": "همه مرز تن بود و خفتان و خود",
      "m2": "تنان را همی داد سرها درود",
      "verse_number": 38
    },
    {
      "id": "0cbd2130-396c-4ae1-8632-668c65e0314a",
      "m1": "ز گرد سوار ابر بر باد شد",
      "m2": "زمین پر ز آواز پولاد شد",
      "verse_number": 39
    },
    {
      "id": "ddbba559-0b56-41e1-b5e4-6fef9278b3a0",
      "m1": "بسی نامدار از پی نام و ننگ",
      "m2": "بدادند بر خیره سرها بجنگ",
      "verse_number": 40
    },
    {
      "id": "d7619e4f-19ee-49dc-8b30-c07a060ddb22",
      "m1": "برآورد رستم برانسان خروش",
      "m2": "که گفتی برآمد زمانه بجوش",
      "verse_number": 41
    },
    {
      "id": "e9f88c7b-c23a-4c5e-8327-6fe55370693a",
      "m1": "چنین گفت کان پیل و آن تخت عاج",
      "m2": "همان یاره و افسر و طوق و تاج",
      "verse_number": 42
    },
    {
      "id": "1da06ea4-a888-4be2-8101-50513ba6c390",
      "m1": "سپرهای چینی و پرده سرای",
      "m2": "همان افسر و آلت چارپای",
      "verse_number": 43
    },
    {
      "id": "736d2643-9784-4683-8f4c-a19db9303356",
      "m1": "بایران سزاوار کیخسروست",
      "m2": "که او در جهان شهریار نوست",
      "verse_number": 44
    },
    {
      "id": "65e9f1a6-defd-48f4-82fe-74210a4ee9f9",
      "m1": "که چون او بگیتی سرافراز شاه",
      "m2": "نبود و ندیدست خورشید و ماه",
      "verse_number": 45
    },
    {
      "id": "3c0e04de-1793-46d8-a1f6-02face917f99",
      "m1": "شما را چه کارست با تاج زر",
      "m2": "بدین زور و این کوشش و این هنر",
      "verse_number": 46
    },
    {
      "id": "8967312e-d67a-47b3-adca-45168e2f19df",
      "m1": "همه دستها سوی بند آورید",
      "m2": "میان را بخم کمند آورید",
      "verse_number": 47
    },
    {
      "id": "1416279f-1d64-4c96-8f74-d7381af1e743",
      "m1": "شما را ز من زندگانی بسست",
      "m2": "که تاج و نگین بهر دیگر کسست",
      "verse_number": 48
    },
    {
      "id": "69b1639f-e3dd-4a63-a646-f35d7f2518d7",
      "m1": "فرستم بنزدیک شاه زمین",
      "m2": "چه منشور و شنگل چه خاقان چین",
      "verse_number": 49
    },
    {
      "id": "28f33e52-447c-40c6-8682-9aba2c2741a4",
      "m1": "و گرنه من این خاک آوردگاه",
      "m2": "بنعل ستوران برآرم بماه",
      "verse_number": 50
    },
    {
      "id": "a4427776-486b-4bb1-b884-180ac10dd622",
      "m1": "بدشنام بگشاد خاقان زبان",
      "m2": "بدو گفت کای بدتن بدروان",
      "verse_number": 51
    },
    {
      "id": "582eea19-b8d4-44fd-9891-4dbdc4fa895e",
      "m1": "مه ایران مه آن شاه و آن انجمن",
      "m2": "همی زینهاریت باید چو من",
      "verse_number": 52
    },
    {
      "id": "044ace46-e1d8-48be-b9e3-813dcc535a91",
      "m1": "تو سگزی که از هر کسی بتری",
      "m2": "همی شاه چین بایدت لشکری",
      "verse_number": 53
    },
    {
      "id": "aa8e841d-e221-43a1-9aba-15df3ab718dc",
      "m1": "یکی تیر باران بکردند سخت",
      "m2": "چو باد خزان برجهد بر درخت",
      "verse_number": 54
    },
    {
      "id": "e3cffceb-f513-4c20-94fa-6992139652b6",
      "m1": "هوا را بپوشید پر عقاب",
      "m2": "نبیند چنان رزم جنگی بخواب",
      "verse_number": 55
    },
    {
      "id": "6adc949a-7e0f-426b-a39f-5fc27878f27b",
      "m1": "چو گودرز باران الماس دید",
      "m2": "ز تیمار رستم دلش بردمید",
      "verse_number": 56
    },
    {
      "id": "30277842-688e-4243-92d4-9bf4f58f8998",
      "m1": "برهام گفت ای درنگی مایست",
      "m2": "برو با کمان وز سواری دویست",
      "verse_number": 57
    },
    {
      "id": "6f826fe7-af29-4792-b207-f656ad1e611e",
      "m1": "کمانهای چاچی و تیر خدنگ",
      "m2": "نگهدار پشت تهمتن بجنگ",
      "verse_number": 58
    },
    {
      "id": "abb9e74d-7038-4c77-ba94-027de1feb678",
      "m1": "بگیو آن زمان گفت برکش سپاه",
      "m2": "برین دشت زین بیش دشمن مخواه",
      "verse_number": 59
    },
    {
      "id": "6a976639-10e8-4078-9d92-126ecae0bd53",
      "m1": "نه هنگام آرام و آسایش است",
      "m2": "نه نیز از در رای و آرایش است",
      "verse_number": 60
    },
    {
      "id": "e7dd63b3-e5e1-4148-80f8-ff6d8b009541",
      "m1": "برو با دلیران سوی دست راست",
      "m2": "نگه کن که پیران و هومان کجاست",
      "verse_number": 61
    },
    {
      "id": "69f6981b-20b4-4031-903f-6c32b8ded873",
      "m1": "تهمتن نگر پیش خاقان چین",
      "m2": "همی آسمان برزند بر زمین",
      "verse_number": 62
    },
    {
      "id": "bba3d080-c455-4cfc-8c19-424b3619f00a",
      "m1": "برآشفت رهام همچون پلنگ",
      "m2": "بیامد بپشت تهمتن بجنگ",
      "verse_number": 63
    },
    {
      "id": "d272fa01-e175-4cff-ba7f-dc2728f06138",
      "m1": "چنین گفت رستم برهام شیر",
      "m2": "که ترسم که رخشم شد از کار سیر",
      "verse_number": 64
    },
    {
      "id": "f58d20ec-723e-4ba6-8999-f6cdd99d00a0",
      "m1": "چنو سست گردد پیاده شوم",
      "m2": "بخون و خوی آهار داده شوم",
      "verse_number": 65
    },
    {
      "id": "e55f0222-55d4-4f2c-a88a-38f4de6fcbfa",
      "m1": "یکی لشکرست این چو مور و ملخ",
      "m2": "تو با پیل و با پیلبانان مچخ",
      "verse_number": 66
    },
    {
      "id": "88a841c3-b4b0-4407-8860-681d4f80d4b9",
      "m1": "همه پاک در پیش خسرو بریم",
      "m2": "ز شگنان و چین هدیهٔ نو بریم",
      "verse_number": 67
    },
    {
      "id": "8e860335-4722-4ffe-8e45-b5b04672508c",
      "m1": "و زان جایگه برخروشید و گفت",
      "m2": "که با روم و چین اهرمن باد جفت",
      "verse_number": 68
    },
    {
      "id": "fe79bb51-cdf6-4391-b060-9c80dc8decc5",
      "m1": "ایا گم شده بخت بیچارگان",
      "m2": "همه زار و با درد غمخوارگان",
      "verse_number": 69
    },
    {
      "id": "9a01fbbe-90a4-472a-87bc-ff77c87963d8",
      "m1": "شما را ز رستم نبود آگهی",
      "m2": "مگر مغزتان از خرد شد تهی",
      "verse_number": 70
    },
    {
      "id": "ea7d9d99-9f38-4623-b132-beb298ec8ae1",
      "m1": "کجا اژدها را ندارد بمرد",
      "m2": "همی پیل جوید بروز نبرد",
      "verse_number": 71
    },
    {
      "id": "c8784c54-3c4f-444f-90de-cabb4e07ace9",
      "m1": "شما را سر از رزم من سیر نیست",
      "m2": "مرا هدیه جز گُرز و شمشیر نیست",
      "verse_number": 72
    },
    {
      "id": "d076f2ba-5e08-4962-be6e-a31034eded47",
      "m1": "ز فتراک بگشاد پیچان کمند",
      "m2": "خم خام در کوههٔ زین فگند",
      "verse_number": 73
    },
    {
      "id": "723108cf-bd5d-49c1-b536-c5f2e3673b5f",
      "m1": "برانگیخت رخش و برآمد خروش",
      "m2": "همی اژدها را بدرید گوش",
      "verse_number": 74
    },
    {
      "id": "0d4f1423-effc-4c86-96a9-3f08fd586a83",
      "m1": "بهر سو که خام اندر انداختی",
      "m2": "زمین از دلیران بپرداختی",
      "verse_number": 75
    },
    {
      "id": "711e1a8c-cc8d-47cd-b2e3-96a8f1b67a8d",
      "m1": "هرانگه که او مهتری را ز زین",
      "m2": "ربودی بخم کمند از کمین",
      "verse_number": 76
    },
    {
      "id": "f88052e8-0e29-44c5-bb37-25654b047299",
