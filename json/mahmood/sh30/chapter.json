{
  "id": "e3ea9ff0-4f87-4156-84ed-0b4a5de24f6b",
  "title": "بخش ۳۰",
  "verses": [
    {
      "id": "bc85ae74-0593-4a55-aa76-cb0dc522d101",
      "m1": "چو یک هفته بگذشت ننمود روی",
      "m2": "برآمد یکی غلغل و گفتگوی",
      "verse_number": 1
    },
    {
      "id": "6e60f678-ca48-4466-a971-7502c717cb70",
      "m1": "همه پهلوانان شدند انجمن",
      "m2": "بزرگان فرزانه و رای زن",
      "verse_number": 2
    },
    {
      "id": "4f9bd897-3cba-4b54-8946-1804ec596dd1",
      "m1": "چو گودرز و چون طوس نوذرنژاد",
      "m2": "سخن رفت چندی ز بیداد و داد",
      "verse_number": 3
    },
    {
      "id": "830c4823-e829-44f2-a901-550816300daf",
      "m1": "ز کردار شاهان برتر منش",
      "m2": "ز یزدان پرستان وز بدکنش",
      "verse_number": 4
    },
    {
      "id": "032641ee-a857-4487-9c79-fb4129b6ac8f",
      "m1": "همه داستانها زدند از مهان",
      "m2": "بزرگان و فرزانگان جهان",
      "verse_number": 5
    },
    {
      "id": "016f7f5b-497c-462f-955f-bd3f7f5f5972",
      "m1": "پدر گیو را گفت کای نیکبخت",
      "m2": "همیشه پرستندهٔ تاج و تخت",
      "verse_number": 6
    },
    {
      "id": "10d2c724-f711-456d-ab7d-a2c46090f9d0",
      "m1": "از ایران بسی رنج برداشتی",
      "m2": "بر و بوم و پیوند بگذاشتی",
      "verse_number": 7
    },
    {
      "id": "f6e09644-f654-40c0-92c8-5b68f29676f7",
      "m1": "به پیش آمد اکنون یکی تیره کار",
      "m2": "که آن را نشاید که داریم خوار",
      "verse_number": 8
    },
    {
      "id": "a2bd8257-70b5-41d0-a57b-54a5a3011a24",
      "m1": "بباید شدن سوی زابلستان",
      "m2": "سواری فرستی به کابلستان",
      "verse_number": 9
    },
    {
      "id": "c7908edc-2784-4724-8118-ebbe935f9571",
      "m1": "به زابل به رستم بگویی که شاه",
      "m2": "ز یزدان بپیچید و گم کرد راه",
      "verse_number": 10
    },
    {
      "id": "a47110bf-1035-452a-a8e6-487e37f61597",
      "m1": "در بار بر نامداران ببست",
      "m2": "همانا که با دیو دارد نشست",
      "verse_number": 11
    },
    {
      "id": "c92faccb-771d-4f54-9f9e-f3e6148bad3a",
      "m1": "بسی پوزش و خواهش آراستیم",
      "m2": "همی زان سخن کام او خواستیم",
      "verse_number": 12
    },
    {
      "id": "e136db9a-7965-4034-9296-2f407b641e3f",
      "m1": "فراوان شنید ایچ پاسخ نداد",
      "m2": "دلش خیره بینیم و سر پر ز باد",
      "verse_number": 13
    },
    {
      "id": "deb3cf69-8adb-4643-be31-833a92fb2218",
      "m1": "بترسیم کو هیچو کاووس شاه",
      "m2": "شود کژ و دیوش بپیچد ز راه",
      "verse_number": 14
    },
    {
      "id": "aa5d760e-56ff-4e64-b46b-62a73e11a759",
      "m1": "شما پهلوانید و داناترید",
      "m2": "به هر بودنی بر تواناترید",
      "verse_number": 15
    },
    {
      "id": "2113f742-e7b3-469f-958d-59a773d45e9a",
      "m1": "کنون هرکه او هست پاکیزهرای",
      "m2": "ز قنوج وز دنور و مرغ و مای",
      "verse_number": 16
    },
    {
      "id": "bcbaad59-d9db-4de6-9cda-b092dbbe0e7d",
      "m1": "ستارهشناسان کابلستان",
      "m2": "همه پاکرویان زابلستان",
      "verse_number": 17
    },
    {
      "id": "a8ddc8ce-13dc-4c69-950d-0a1edc70fea6",
      "m1": "بیارید ز این در یکی انجمن",
      "m2": "به ایران خرامید با خویشتن",
      "verse_number": 18
    },
    {
      "id": "10d650d1-4de6-4d31-b434-6475e8364eb9",
      "m1": "شد این پادشاهی پر از گفتگوی",
      "m2": "چو پوشید خسرو ز ما رای و روی",
      "verse_number": 19
    },
    {
      "id": "2bbb9198-2616-4b1a-bda5-eff8501c96ed",
      "m1": "فگندیم هرگونه رایی ز بن",
      "m2": "ز دستان گشاید همی این سخن",
      "verse_number": 20
    },
    {
      "id": "f3a25f0f-fedc-4074-aaf2-6f75a908af75",
      "m1": "سخنهای گودرز بشنید گیو",
      "m2": "ز لشکر گزین کرد مردان نیو",
      "verse_number": 21
    },
    {
      "id": "a649457b-5d7c-49f4-87b2-0cd9b84528c3",
      "m1": "برآشفت و اندیشه اندر گرفت",
      "m2": "ز ایران ره سیستان برگرفت",
      "verse_number": 22
    },
    {
      "id": "dcb41011-f32d-4827-b853-90aca64ee01d",
      "m1": "چو نزدیک دستان و رستم رسید",
      "m2": "بگفت آن شگفتی که دید و شنید",
      "verse_number": 23
    },
    {
      "id": "b8db168f-f59c-4de5-af71-3ae171673c99",
      "m1": "غمی گشت پس نامور زال گفت",
      "m2": "که گشتیم با رنج بسیار جفت",
      "verse_number": 24
    },
    {
      "id": "8896ef34-89df-49a6-bb4c-e44a4a3499e0",
      "m1": "به رستم چنین گفت کز بخردان",
      "m2": "ستارهشناسان و هم موبدان",
      "verse_number": 25
    },
    {
      "id": "fc098381-4d26-4d6b-966c-c0cc75a068dc",
      "m1": "ز زابل بخوان و ز کابل بخواه",
      "m2": "بدان تا بیایند با ما به راه",
      "verse_number": 26
    },
    {
      "id": "23e03f7d-f12f-433d-92da-ab5dad1179c9",
      "m1": "شدند انجمن موبدان و ردان",
      "m2": "ستارهشناسان و هم بخردان",
      "verse_number": 27
    },
    {
      "id": "f6b8f4e3-8d91-4af5-a199-bb9d6cd4ddca",
      "m1": "همه سوی دستان نهادند روی",
      "m2": "ز زابل به ایران نهادند روی",
      "verse_number": 28
    },
    {
      "id": "8ba00e07-0aa5-4c39-8959-a296a39ba7b0",
      "m1": "جهاندار بر پای بد هفت روز",
      "m2": "به هشتم چو بفروخت گیتیفروز",
      "verse_number": 29
    },
    {
      "id": "8a6082f2-0e51-4bbf-9d9c-c073628f9664",
      "m1": "ز در پرده برداشت سالار بار",
      "m2": "نشست از بر تخت زر شهریار",
      "verse_number": 30
    },
    {
      "id": "ef85df0e-0746-4643-9759-60c7e474ca08",
      "m1": "همه پهلوانان ابا موبدان",
      "m2": "برفتند نزدیک شاه جهان",
      "verse_number": 31
    },
    {
      "id": "9d8512cf-8da2-480e-bd9e-ce11fc60eef3",
      "m1": "فراوان ببودند پیشش به پای",
      "m2": "بزرگان با دانش و رهنمای",
      "verse_number": 32
    },
    {
      "id": "67ee90cf-c8e9-4752-ba56-a9cde45df4b9",
      "m1": "جهاندار چون دید بنواختشان",
      "m2": "به رسم کیان پایگه ساختشان",
      "verse_number": 33
    },
    {
      "id": "6217378f-7dbc-4166-9d5a-4f31ec3baab7",
      "m1": "از آن نامداران خسروپرست",
      "m2": "کس از پای ننشست و نگشاد دست",
      "verse_number": 34
    },
    {
      "id": "c99578bf-f3b0-4763-a38f-a658e4a5496f",
      "m1": "گشادند لب کی سپهر روان",
      "m2": "جهاندار با داد و روشنروان",
      "verse_number": 35
    },
    {
      "id": "0210b42d-3d74-406a-83a8-0f05a305e4bf",
      "m1": "توانایی و فر شاهی تراست",
      "m2": "ز خورشید تا پشت ماهی تراست",
      "verse_number": 36
    },
    {
      "id": "22265483-1532-4b68-ae23-5285e4414df0",
      "m1": "همه بودنیها به روشنروان",
      "m2": "بدانی به کردار و دانش جوان",
      "verse_number": 37
    },
    {
      "id": "7decb0f6-815d-4a45-903c-e5874b4c104b",
      "m1": "همه بندگانیم در پیش شاه",
      "m2": "چه کردیم و بر ما چرا بست راه",
      "verse_number": 38
    },
    {
      "id": "cb7fb614-9596-4872-8712-62723ee5562a",
      "m1": "اگر غم ز دریاست خشکی کنیم",
      "m2": "همه چادر خاک مشکی کنیم",
      "verse_number": 39
    },
    {
      "id": "0f1ec730-bf7b-4815-bdf4-47e2161ca414",
      "m1": "وگر کوه باشد ز بن برکنیم",
      "m2": "به خنجر دل دشمنان بشکنیم",
      "verse_number": 40
    },
    {
      "id": "476092f3-8cea-4e3f-9935-6aaf58c2efa0",
      "m1": "وگر چارهٔ این برآید به گنج",
      "m2": "نبیند ز گنج درم نیز رنج",
      "verse_number": 41
    },
    {
      "id": "3b60742d-a07a-4053-9f9e-1d73b0e2446e",
      "m1": "همه پاسبانان گنج توایم",
      "m2": "پر از درد گریان ز رنج توایم",
      "verse_number": 42
    },
    {
      "id": "f2ebf512-0e1a-4556-8b74-80567225f4c1",
      "m1": "چنین داد پاسخ جهاندار باز",
      "m2": "که از پهلوانان نیم بینیاز",
      "verse_number": 43
    },
    {
      "id": "2796adc2-67bc-46c8-b0a3-ea62d4173678",
      "m1": "ولیکن ندارم همی دل به رنج",
      "m2": "ز نیروی دست و ز مردان و گنج",
      "verse_number": 44
    },
    {
      "id": "ccd5116f-f32f-499e-bb7c-2c330e768e6a",
      "m1": "نه در کشوری دشمن آمد پدید",
      "m2": "که تیمار آن بد بباید کشید",
      "verse_number": 45
    },
    {
      "id": "9fa8bdb0-d5e3-4c19-84f8-359cd1428f26",
      "m1": "یکی آرزو خواست روشن دلم",
      "m2": "همی دل از آن آرزو نگسلم",
      "verse_number": 46
    },
    {
      "id": "776cf8ff-0f77-4f80-aeae-17f5906902b0",
      "m1": "بدان آرزو دارم اکنون امید",
      "m2": "شب تیره تا گاه روز سپید",
      "verse_number": 47
    },
    {
      "id": "b674af44-6fd3-494b-9ae2-a3a85c9d4523",
      "m1": "چو یابم بگویم همه راز خویش",
      "m2": "برآرم نهان کرده آواز خویش",
      "verse_number": 48
    },
    {
      "id": "7378e3db-2c5e-40e3-b7bc-d71767b201c5",
      "m1": "شما بازگردید پیروز و شاد",
      "m2": "بد اندیشه بر دل مدارید یاد",
      "verse_number": 49
    },
    {
      "id": "0a230fb7-ced0-42eb-b66f-f1aa5f8fa57e",
      "m1": "همه پهلوانان آزادمرد",
      "m2": "بر او خواندند آفرینی به درد",
      "verse_number": 50
    },
    {
      "id": "e975388c-18c1-4131-b0aa-e5fec96c7555",
      "m1": "چو ایشان برفتند پیروز شاه",
      "m2": "بفرمود تا پردهٔ بارگاه",
      "verse_number": 51
    },
    {
      "id": "3ffe572e-9d94-4d3c-9eee-ad3512fb2cc6",
      "m1": "فروهشت و بنشست گریان به درد",
      "m2": "همی بود پیچان و رخ لاژورد",
      "verse_number": 52
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 52
  },
  "order_in_parent": 30
}