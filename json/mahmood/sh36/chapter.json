{
  "id": "a2be17ed-2820-4b1b-9fad-facd86434480",
  "title": "بخش ۳۶",
  "verses": [
    {
      "id": "da341f9f-fe92-453f-8f37-ad3d41acdd22",
      "m1": "چو دستان شنید این سخن خیره شد",
      "m2": "همی چشمش از روی او تیره شد",
      "verse_number": 1
    },
    {
      "id": "a9e6a42c-841d-44a0-afa8-7292c432d6a7",
      "m1": "خروشان شد از شاه و بر پای خاست",
      "m2": "چنین گفت کای داور داد و راست",
      "verse_number": 2
    },
    {
      "id": "6ca3e919-a76e-43fe-8c2b-a96a0534e69e",
      "m1": "ز من بود تیزی و نابخردی",
      "m2": "توی پاک فرزانهٔ ایزدی",
      "verse_number": 3
    },
    {
      "id": "c69e4f44-ce4a-422f-995b-520619cf4ba5",
      "m1": "سزد گر ببخشی گناه مرا",
      "m2": "اگر دیو گم کرد راه مرا",
      "verse_number": 4
    },
    {
      "id": "b272d659-fd0d-428b-a8ba-8acd5b282c46",
      "m1": "مرا سالیان شد فزون از شمار",
      "m2": "کمر بستهام پیش هر شهریار",
      "verse_number": 5
    },
    {
      "id": "bcd0dd63-dfb5-4b73-a1bf-7f6b988414fa",
      "m1": "ز شاهان ندیدم کز این گونه راه",
      "m2": "بجستی ز دادار خورشید و ماه",
      "verse_number": 6
    },
    {
      "id": "d103edff-84c9-4ccf-aaac-174e31c563a6",
      "m1": "که ما را جدایی نبود آرزوی",
      "m2": "از این دادگر خسرو نیکخوی",
      "verse_number": 7
    },
    {
      "id": "497c374c-24a5-4a16-bc14-40216213b20c",
      "m1": "سخنهای دستان چو بشنید شاه",
      "m2": "پسند آمدش پوزش نیکخواه",
      "verse_number": 8
    },
    {
      "id": "882006cd-0e38-478a-8553-febf52ff1555",
      "m1": "بیازید و بگرفت دستش به دست",
      "m2": "بر خویش بردش به جای نشست",
      "verse_number": 9
    },
    {
      "id": "b4d206d0-1f3e-4a2a-b622-fd5976c458a4",
      "m1": "بدانست کاو این سخن جز به مهر",
      "m2": "نپیمود با شاه خورشید چهر",
      "verse_number": 10
    },
    {
      "id": "3e1b6728-57b2-47a7-97c7-4b30c0fd4d1f",
      "m1": "چنین گفت پس شاه با زال زر",
      "m2": "که اکنون ببندید یکسر کمر",
      "verse_number": 11
    },
    {
      "id": "3d97ffac-2ea9-4499-8760-dfa198f26deb",
      "m1": "تو و رستم و طوس و گودرز و گیو",
      "m2": "دگر هر که او نامدارست نیو",
      "verse_number": 12
    },
    {
      "id": "900ee0cf-4060-4b0f-850b-3e46863352b3",
      "m1": "سراپرده از شهر بیرون برید",
      "m2": "درفش همایون به هامون برید",
      "verse_number": 13
    },
    {
      "id": "fe64ba07-1c41-403f-a8f2-767d7ca8b106",
      "m1": "ز خرگاه وز خیمه چندان که هست",
      "m2": "بسازید بر دشت جای نشست",
      "verse_number": 14
    },
    {
      "id": "5dc689e0-c369-41f3-bf07-b974838aee25",
      "m1": "درفش بزرگان و پیل و سپاه",
      "m2": "بسازید روشن یکی رزمگاه",
      "verse_number": 15
    },
    {
      "id": "4b91dd25-8fa8-4cb4-8cab-92b1ba974bf8",
      "m1": "چنان کرد رستم که خسرو بگفت",
      "m2": "ببردند پردهسرای از نهفت",
      "verse_number": 16
    },
    {
      "id": "153bbd9f-827a-41ec-b82c-4db40a8bf1a9",
      "m1": "به هامون کشیدند ایرانیان",
      "m2": "به فرمان ببستند یکسر میان",
      "verse_number": 17
    },
    {
      "id": "c00ab5a4-88b5-4d00-8ef3-f175578c7ae5",
      "m1": "سپید و سیاه و بنفش و کبود",
      "m2": "زمین کوه تا کوه پر خیمه بود",
      "verse_number": 18
    },
    {
      "id": "717a837a-02a2-4bf7-aeb7-5533c213838c",
      "m1": "میان اندرون کاویانی درفش",
      "m2": "جهان زو شده سرخ و زرد و بنفش",
      "verse_number": 19
    },
    {
      "id": "5af85ab4-68db-4142-8034-227e538cbf9d",
      "m1": "سراپردهٔ زال نزدیک شاه",
      "m2": "برافراخته زو درفش سیاه",
      "verse_number": 20
    },
    {
      "id": "f1bb1a69-1ae8-4e83-a4a6-dd27e9dd3fb9",
      "m1": "به دست چپش رستم پهلوان",
      "m2": "ز کابل بزرگان روشنروان",
      "verse_number": 21
    },
    {
      "id": "0ec16898-0c9f-491e-975d-ca56ff210395",
      "m1": "به پیش اندرون طوس و گودرز و گیو",
      "m2": "چو رهام و شاپور و گرگین نیو",
      "verse_number": 22
    },
    {
      "id": "c921ce4b-68ea-4690-a910-20957228ec7d",
      "m1": "پس پشت او بیژن و گستهم",
      "m2": "بزرگان که بودند با او به هم",
      "verse_number": 23
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 23
  }
}