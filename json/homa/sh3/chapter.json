{
  "id": "a7d64d50-6c51-40e9-b710-d34e29781c48",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "2eff2f6e-761b-496e-9f2e-9c41e7b14a2b",
      "m1": "به گازر چنین گفت روزی که من",
      "m2": "همی این نهان دارم از انجمن",
      "verse_number": 1
    },
    {
      "id": "c90c8d70-ff18-4870-9d40-ec0b5a8eec9f",
      "m1": "نجنبد همی بر تو بر مهر من",
      "m2": "نماند به چهر تو هم چهر من",
      "verse_number": 2
    },
    {
      "id": "ff7e513a-2019-429b-a185-1b4ec6284b7d",
      "m1": "شگفت آیدم چون پسر خوانیم",
      "m2": "به دکان بر خویش بنشانیم",
      "verse_number": 3
    },
    {
      "id": "1a1fd7bf-3c71-4eba-986d-d763f1237816",
      "m1": "بدو گفت گازر که اینت سخن",
      "m2": "دریغ آن شده رنجهای کهن",
      "verse_number": 4
    },
    {
      "id": "0d9b5d6a-41bd-445f-aa6a-30620d78c68a",
      "m1": "تراگر منش زان من برتر است",
      "m2": "پدرجوی را راز با مادر است",
      "verse_number": 5
    },
    {
      "id": "7ce7d7e2-2738-4abd-831b-d08b53beb9ad",
      "m1": "چنان بد که یک روز گازر برفت",
      "m2": "ز خانه سوی رود یازید تفت",
      "verse_number": 6
    },
    {
      "id": "8342ac25-aae8-4ade-a299-dc2f3cb5b8e7",
      "m1": "در خانه را تنگ داراب بست",
      "m2": "بیامد به شمشیر یازید دست",
      "verse_number": 7
    },
    {
      "id": "51cf907b-96ef-4617-abc0-98f56814c01f",
      "m1": "به زن گفت کژی و تاری مجوی",
      "m2": "هرآنچت بپرسم سخن راست گوی",
      "verse_number": 8
    },
    {
      "id": "39aa1f14-836d-4d57-aa3e-0c61166891a5",
      "m1": "شما را که باشم به گوهر کیم",
      "m2": "به نزدیک گازر ز بهر چیم",
      "verse_number": 9
    },
    {
      "id": "3e461723-42b4-47a0-83a1-7ae4d841b0d6",
      "m1": "زن گازر از بیم زنهار خواست",
      "m2": "خداوند داننده را یار خواست",
      "verse_number": 10
    },
    {
      "id": "e349727b-1e4a-45e2-91c8-054f39b23626",
      "m1": "بدو گفت خون سر من مجوی",
      "m2": "بگویم ترا هرچ گفتی بگوی",
      "verse_number": 11
    },
    {
      "id": "5d121c0d-dfcb-4fd2-832d-3c20a2ad2b62",
      "m1": "سخنها یکایک بر و بر شمرد",
      "m2": "بکوشید وز کار کژی نبرد",
      "verse_number": 12
    },
    {
      "id": "919e0de6-15e6-4992-9940-d1c9af39bda2",
      "m1": "ز صندوق وز کودک شیرخوار",
      "m2": "ز دینار وز گوهر شاهوار",
      "verse_number": 13
    },
    {
      "id": "085b883e-949b-4c6a-ab73-dfeb1487df28",
      "m1": "بدو گفت ما دستکاران بدیم",
      "m2": "نه از تخمهٔ کامکاران بدیم",
      "verse_number": 14
    },
    {
      "id": "a99deff9-c181-4f61-9ff4-65726c8ac9f8",
      "m1": "ازان تو داریم چیزی که هست",
      "m2": "ز پوشیدنی جامه و برنشست",
      "verse_number": 15
    },
    {
      "id": "572d4819-7aba-4869-b293-d35622772a4f",
      "m1": "پرستنده ماییم و فرمان تراست",
      "m2": "نگر تا چه باید تن و جان تراست",
      "verse_number": 16
    },
    {
      "id": "e91b8911-585d-4877-ac41-0c08d9da4851",
      "m1": "چو بشنید داراب خیره بماند",
      "m2": "روان را به اندیشه اندر نشاند",
      "verse_number": 17
    },
    {
      "id": "57e4e4ef-7bfb-4930-9316-2f25f904b63b",
      "m1": "بدو گفت زین خواسته هیچ ماند",
      "m2": "وگر گازر آن را همه برفشاند",
      "verse_number": 18
    },
    {
      "id": "c5a2a184-04b5-4893-9891-9f9ad1c4296b",
      "m1": "که باشد بهای یکی بارگی",
      "m2": "بدین روز کندی و بیچارگی",
      "verse_number": 19
    },
    {
      "id": "c9d20828-bc25-4b1d-87bc-d4788c5b0300",
      "m1": "چنین داد پاسخ که بیش است ازین",
      "m2": "درخت برومند و باغ و زمین",
      "verse_number": 20
    },
    {
      "id": "19005eb3-6717-4100-814c-7830d860dd4c",
      "m1": "بدو داد دینار چندانک بود",
      "m2": "بماند آن گران گوهر نابسود",
      "verse_number": 21
    },
    {
      "id": "66872724-6083-480e-8566-33dd633194d7",
      "m1": "به دینار اسپی خرید او پسند",
      "m2": "یکی کمبها زین و دیگر کمند",
      "verse_number": 22
    },
    {
      "id": "878a51b3-c232-45d4-b194-d53fb19cde15",
      "m1": "یکی مرزبان بود با سنگ و رای",
      "m2": "بزرگ و پسندیده و رهنمای",
      "verse_number": 23
    },
    {
      "id": "5ba54d74-d7d8-4ad7-817c-483061209421",
      "m1": "خرامید داراب نزدیک اوی",
      "m2": "پراندیشه بد جان تاریک اوی",
      "verse_number": 24
    },
    {
      "id": "90a108f3-2a6a-4097-8333-39c0236f6b7c",
      "m1": "همی داشتش مرزبان ارجمند",
      "m2": "ز گیتی نیامد بروبر گزند",
      "verse_number": 25
    },
    {
      "id": "d63b361c-7acc-45f2-80ed-21933f2f4182",
      "m1": "چنان بد که آمد سپاهی ز روم",
      "m2": "به غارت بران مرز آباد بوم",
      "verse_number": 26
    },
    {
      "id": "ad5e5acb-5073-4da1-b2ed-bb1e99628baf",
      "m1": "به رزم اندرون مرزبان کشته شد",
      "m2": "سر لشکرش زان سخن گشته شد",
      "verse_number": 27
    },
    {
      "id": "7d7d671d-2a72-498d-98a4-64c0015810d8",
      "m1": "چو آگاهی آمد به نزد همای",
      "m2": "که رومی نهاد اندرین مرز پای",
      "verse_number": 28
    },
    {
      "id": "26b50eb2-a1fc-47c1-bc86-227a46f9da4c",
      "m1": "یکی مرد بد نام او رشنواد",
      "m2": "سپهبد بد او هم سپهبدنژاد",
      "verse_number": 29
    },
    {
      "id": "4d9f4426-b860-4778-b478-deff6e8c3068",
      "m1": "بفرمود تا برکشد سوی روم",
      "m2": "به شمشیر ویران کند روی بوم",
      "verse_number": 30
    },
    {
      "id": "e0c105a2-7f2a-49f5-89c5-d2e23d7d9f0a",
      "m1": "سپه گرد کرد آن زمان رشنواد",
      "m2": "عرضگاه بنهاد و روزی بداد",
      "verse_number": 31
    },
    {
      "id": "8b01a854-5e21-4848-914a-d78a92310ccd",
      "m1": "چو بشنید داراب شد شادکام",
      "m2": "به نزدیک او رفت و بنوشت نام",
      "verse_number": 32
    },
    {
      "id": "09946a43-88c3-4110-9215-32152b644353",
      "m1": "سپه چون فراوان شد از هر دری",
      "m2": "همی آمد از هر سوی لشکری",
      "verse_number": 33
    },
    {
      "id": "3569f423-43e3-402f-ba7e-8a7189d39907",
      "m1": "بیامد ز کاخ همایون همای",
      "m2": "خود و مرزبانان پاکیزهرای",
      "verse_number": 34
    },
    {
      "id": "f55e896e-79f4-46ea-89a6-e9df62441a2d",
      "m1": "بدان تا سپه پیش او بگذرند",
      "m2": "تن و نام و دیوانها بشمرند",
      "verse_number": 35
    },
    {
      "id": "c2e8d91b-1577-4abd-a1b6-52817997ccf6",
      "m1": "همی بود چندی بران پهن دشت",
      "m2": "چو لشکر فراوان برو برگذشت",
      "verse_number": 36
    },
    {
      "id": "c602bbc4-024b-4de6-93d0-c251236e7b80",
      "m1": "چو داراب را دید با فر و برز",
      "m2": "به گردن برآورده پولاد گرز",
      "verse_number": 37
    },
    {
      "id": "e63719a1-5e42-4335-9e77-5c6ad4d22968",
      "m1": "تو گفتی همه دشت پهنای اوست",
      "m2": "زمین زیر پوینده بالای اوست",
      "verse_number": 38
    },
    {
      "id": "cb449fa8-2c0c-4d70-957b-e93e50fbee97",
      "m1": "چو دید آن بر و چهرهٔ دلپذیر",
      "m2": "ز پستان مادر بپالود شیر",
      "verse_number": 39
    },
    {
      "id": "dda809c4-0c9a-45e3-ae18-95a360e93afa",
      "m1": "بپرسید و گفت این سوار از کجاست",
      "m2": "بدین شاخ و این برز و بالای راست",
      "verse_number": 40
    },
    {
      "id": "3cdf237d-60fd-40b9-95d9-8765f78b9eaa",
      "m1": "نماید که این نامداری بود",
      "m2": "خردمند و جنگی سواری بود",
      "verse_number": 41
    },
    {
      "id": "5a0242c4-2264-4c1b-8d58-6fc4790a21ec",
      "m1": "دلیر و سرافراز و کنداور است",
      "m2": "ولیکن سلیحش نه اندرخور است",
      "verse_number": 42
    },
    {
      "id": "9f739751-3e8a-4872-a617-f28c7130cf82",
      "m1": "چو داراب را فرمند آمدش",
      "m2": "سپه را سراسر پسند آمدش",
      "verse_number": 43
    },
    {
      "id": "9610bc3e-f1fa-4260-8b4b-e504eaac4806",
      "m1": "ز اختر یکی روزگاری گزید",
      "m2": "ز بهر سپهبد چنان چون سزید",
      "verse_number": 44
    },
    {
      "id": "558ba1c2-7c5d-424a-832f-a873693bd8a5",
      "m1": "چو جنگآوران را یکی گشت رای",
      "m2": "ببردند لشکر ز پیش همای",
      "verse_number": 45
    },
    {
      "id": "b75b322e-5f21-45f2-b126-7d45d218f519",
      "m1": "فرستاد بیدار کارآگهان",
      "m2": "بدان تا نماند سخن در نهان",
      "verse_number": 46
    },
    {
      "id": "038238b6-d13b-4b56-9b5e-3f1b37db95b5",
      "m1": "ز نیک و بد لشکر آگاه بود",
      "m2": "ز بدها گمانیش کوتاه بود",
      "verse_number": 47
    },
    {
      "id": "a19e16e1-9774-4b45-8bc8-d7e38cf43b4d",
      "m1": "همی رفت منزل به منزل سپاه",
      "m2": "زمین پر سپاه آسمان پر ز ماه",
      "verse_number": 48
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 48
  }
}