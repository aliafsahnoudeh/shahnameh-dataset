{
  "id": "e96f677e-01de-40a3-8668-e5b42a258531",
  "title": "بخش ۷ - کاوه آهنگر و درفش کاویانی و ساخته شدن گرز گاوسر",
  "verses": [
    {
      "id": "c706e53e-aa4d-40c8-8b44-ff57884774d1",
      "m1": "چنان بد که ضحاک را روز و شب",
      "m2": "به نام فریدون گشادی دو لب",
      "verse_number": 1
    },
    {
      "id": "52d313f4-f14e-4f85-835f-473bda766bfc",
      "m1": "بران برز بالا ز بیم نشیب",
      "m2": "شده ز آفریدون دلش پر نهیب",
      "verse_number": 2
    },
    {
      "id": "f6946ab7-af24-4971-a574-5da831379c3e",
      "m1": "چنان بد که یک روز بر تخت عاج",
      "m2": "نهاده به سر بر ز پیروزه تاج",
      "verse_number": 3
    },
    {
      "id": "f34d9a64-697e-4626-98db-89b0652a62bc",
      "m1": "ز هر کشوری مهتران را بخواست",
      "m2": "که در پادشاهی کند پشت راست",
      "verse_number": 4
    },
    {
      "id": "e5a726a9-a65c-4583-bef7-b42677371471",
      "m1": "از آن پس چنین گفت با موبدان",
      "m2": "که ای پرهنر باگهر بخردان",
      "verse_number": 5
    },
    {
      "id": "959df446-6732-4859-a800-18f14050e39d",
      "m1": "مرا در نهانی یکی دشمنست",
      "m2": "که بر بخردان این سخن روشن است",
      "verse_number": 6
    },
    {
      "id": "e224c951-b460-47e1-92b3-3123f1ab6722",
      "m1": "به سال اندکی و به دانش بزرگ",
      "m2": "گوی بدنژادی دلیر و سترگ",
      "verse_number": 7
    },
    {
      "id": "473667b3-155a-47b4-b565-db4e61d3efbd",
      "m1": "اگر چه به سال اندک ای راستان",
      "m2": "درین کار موبد زدش داستان",
      "verse_number": 8
    },
    {
      "id": "fe2e6b23-60c1-4505-a4c0-1952514f8d17",
      "m1": "که دشمن اگر چه بود خوار و خرد",
      "m2": "نبایدت او را به پی بر سپرد",
      "verse_number": 9
    },
    {
      "id": "1301f71c-9b02-4a80-90e3-045c50175d03",
      "m1": "ندارم همی دشمن خرد خوار",
      "m2": "بترسم همی از بد روزگار",
      "verse_number": 10
    },
    {
      "id": "3f29ebd8-5f3b-4921-908c-dfcaca950ef1",
      "m1": "همی زین فزون بایدم لشکری",
      "m2": "هم از مردم و هم ز دیو و پری",
      "verse_number": 11
    },
    {
      "id": "1ed57e6a-c083-426a-a0ba-fe314c02bced",
      "m1": "یکی لشگری خواهم انگیختن",
      "m2": "ابا دیو مردم برآمیختن",
      "verse_number": 12
    },
    {
      "id": "29850d7c-c771-4939-be5e-fe6beb0883c9",
      "m1": "بباید بدین بود همداستان",
      "m2": "که من ناشکیبم بدین داستان",
      "verse_number": 13
    },
    {
      "id": "dcdce0e6-ce09-48f6-aaa7-99b3613827f5",
      "m1": "یکی محضر اکنون بباید نوشت",
      "m2": "که جز تخم نیکی سپهبد نکشت",
      "verse_number": 14
    },
    {
      "id": "599a332c-71a8-41ac-9fa9-6d75862c3c5b",
      "m1": "نگوید سخن جز همه راستی",
      "m2": "نخواهد به داد اندرون کاستی",
      "verse_number": 15
    },
    {
      "id": "2f1dd2cc-e173-4271-b18b-5e63af3054d8",
      "m1": "ز بیم سپهبد همه راستان",
      "m2": "بر آن کار گشتند همداستان",
      "verse_number": 16
    },
    {
      "id": "007f1455-7b72-4e7a-8e80-91a076112fe3",
      "m1": "بر آن محضر اژدها ناگزیر",
      "m2": "گواهی نوشتند برنا و پیر",
      "verse_number": 17
    },
    {
      "id": "61cde8e5-f84b-4a7b-9b66-9633a92ae2dc",
      "m1": "هم آنگه یکایک ز درگاه شاه",
      "m2": "برآمد خروشیدن دادخواه",
      "verse_number": 18
    },
    {
      "id": "e4ea482e-6716-4ac2-9e9d-5b95d5ef620e",
      "m1": "ستم دیده را پیش او خواندند",
      "m2": "بر نامدارانش بنشاندند",
      "verse_number": 19
    },
    {
      "id": "e8c16569-edea-4e57-baee-7fc1d717d0b1",
      "m1": "بدو گفت مهتر به روی دژم",
      "m2": "که بر گوی تا از که دیدی ستم",
      "verse_number": 20
    },
    {
      "id": "fffbeb87-e399-4f0a-a068-9b41319f2c36",
      "m1": "خروشید و زد دست بر سر ز شاه",
      "m2": "که شاها منم کاوهٔ دادخواه",
      "verse_number": 21
    },
    {
      "id": "52666b9b-33de-4950-a162-cecc34578e72",
      "m1": "یکی بیزیان مرد آهنگرم",
      "m2": "ز شاه آتش آید همی بر سرم",
      "verse_number": 22
    },
    {
      "id": "7b205bd4-ccdb-4b2b-beda-44e02d596f01",
      "m1": "تو شاهی و گر اژدها پیکری",
      "m2": "بباید بدین داستان داوری",
      "verse_number": 23
    },
    {
      "id": "8034d606-c72f-449d-a423-6bc5cc14ffb5",
      "m1": "که گر هفت کشور به شاهی تراست",
      "m2": "چرا رنج و سختی همه بهر ماست",
      "verse_number": 24
    },
    {
      "id": "bbd363ea-42d0-4180-a091-30cdf1f3cb0c",
      "m1": "شماریت با من بباید گرفت",
      "m2": "بدان تا جهان ماند اندر شگفت",
      "verse_number": 25
    },
    {
      "id": "e24af73a-42c9-4da3-b653-4092df1e4b97",
      "m1": "مگر کز شمار تو آید پدید",
      "m2": "که نوبت ز گیتی به من چون رسید",
      "verse_number": 26
    },
    {
      "id": "30543f76-b466-4843-a610-7450cbfe9ae7",
      "m1": "که مارانت را مغز فرزند من",
      "m2": "همیداد باید ز هر انجمن",
      "verse_number": 27
    },
    {
      "id": "ae11f4c6-a18c-4418-8d52-57689b3d8af5",
      "m1": "سپهبد به گفتار او بنگرید",
      "m2": "شگفت آمدش کان سخنها شنید",
      "verse_number": 28
    },
    {
      "id": "406f4dda-9825-4ace-a562-8b4363d7616b",
      "m1": "بدو باز دادند فرزند او",
      "m2": "به خوبی بجستند پیوند او",
      "verse_number": 29
    },
    {
      "id": "5ef386e6-8887-4bf6-9b44-fb8b297ea6a2",
      "m1": "بفرمود پس کاوه را پادشا",
      "m2": "که باشد بران محضر اندر گوا",
      "verse_number": 30
    },
    {
      "id": "05dcb108-c2d9-4496-b2b5-c578aa60f802",
      "m1": "چو بر خواند کاوه همه محضرش",
      "m2": "سبک سوی پیران آن کشورش",
      "verse_number": 31
    },
    {
      "id": "51b31b32-b4ff-415b-8383-3b719b6a5b49",
      "m1": "خروشید کای پای مردان دیو",
      "m2": "بریده دل از ترس گیهان خدیو",
      "verse_number": 32
    },
    {
      "id": "a1dc7331-5118-417d-873a-f67ee373c975",
      "m1": "همه سوی دوزخ نهادید روی",
      "m2": "سپردید دلها به گفتار اوی",
      "verse_number": 33
    },
    {
      "id": "5c0e9d42-474f-414b-9803-f9c665a6dcc5",
      "m1": "نباشم بدین محضر اندر گوا",
      "m2": "نه هرگز براندیشم از پادشا",
      "verse_number": 34
    },
    {
      "id": "0bc60035-f0bd-4bc0-a852-22cb01209f02",
      "m1": "خروشید و برجست لرزان ز جای",
      "m2": "بدرید و بسپرد محضر به پای",
      "verse_number": 35
    },
    {
      "id": "1b080909-dea1-4752-85b7-ce1bd30ffffb",
      "m1": "گرانمایه فرزند او پیش اوی",
      "m2": "ز ایوان برون شد خروشان به کوی",
      "verse_number": 36
    },
    {
      "id": "87ad8d6e-8ab1-438b-b8d3-ba6461d8acee",
      "m1": "مهان شاه را خواندند آفرین",
      "m2": "که ای نامور شهریار زمین",
      "verse_number": 37
    },
    {
      "id": "66330a60-ab88-46c6-9ef1-8a6c9d4f14e5",
      "m1": "ز چرخ فلک بر سرت باد سرد",
      "m2": "نیارد گذشتن به روز نبرد",
      "verse_number": 38
    },
    {
      "id": "a0e5a8b9-ed99-4c80-a86a-6f588134fc0b",
      "m1": "چرا پیش تو کاوهٔ خامگوی",
      "m2": "بسان همالان کند سرخ روی",
      "verse_number": 39
    },
    {
      "id": "e0c614d9-420f-4b76-8fe0-0e20078db2c4",
      "m1": "همه محضر ما و پیمان تو",
      "m2": "بدرد بپیچد ز فرمان تو",
      "verse_number": 40
    },
    {
      "id": "c2c0f1cb-64e3-4a3f-95b7-f463c6f4aa10",
      "m1": "کی نامور پاسخ آورد زود",
      "m2": "که از من شگفتی بباید شنود",
      "verse_number": 41
    },
    {
      "id": "7a8b869e-6a8c-4242-9f2d-e5bb3517c400",
      "m1": "که چون کاوه آمد ز درگه پدید",
      "m2": "دو گوش من آواز او را شنید",
      "verse_number": 42
    },
    {
      "id": "1d5add46-447f-49c9-8af3-526d407315ba",
      "m1": "میان من و او ز ایوان درست",
      "m2": "تو گفتی یکی کوه آهن برست",
      "verse_number": 43
    },
    {
      "id": "4de24eed-9d61-4a02-8ee7-a1af2ceacd80",
      "m1": "ندانم چه شاید بدن زین سپس",
      "m2": "که راز سپهری ندانست کس",
      "verse_number": 44
    },
    {
      "id": "113fcf35-49be-42e7-9ae9-388b697eabb2",
      "m1": "چو کاوه برون شد ز درگاه شاه",
      "m2": "برو انجمن گشت بازارگاه",
      "verse_number": 45
    },
    {
      "id": "0f501300-1c0f-452d-9e2b-428a418ec970",
      "m1": "همی بر خروشید و فریاد خواند",
      "m2": "جهان را سراسر سوی داد خواند",
      "verse_number": 46
    },
    {
      "id": "4636ea6e-7e7d-4aa7-9b53-cfd3391efbaa",
      "m1": "ازان چرم کاهنگران پشت پای",
      "m2": "بپوشند هنگام زخم درای",
      "verse_number": 47
    },
    {
      "id": "39c6d000-9f68-498a-93b6-3a8adfc889e7",
      "m1": "همان کاوه آن بر سر نیزه کرد",
      "m2": "همانگه ز بازار برخاست گرد",
      "verse_number": 48
    },
    {
      "id": "e5256de6-75f7-44a5-a97e-8b0b4420888e",
      "m1": "خروشان همیرفت نیزه بدست",
      "m2": "که ای نامداران یزدان پرست",
      "verse_number": 49
    },
    {
      "id": "6d7f93ff-50ac-4dc9-a804-aa3601bf1c6a",
      "m1": "کسی کاو هوای فریدون کند",
      "m2": "دل از بند ضحاک بیرون کند",
      "verse_number": 50
    },
    {
      "id": "96416281-9ee5-4364-83b7-a3d0e1404bc8",
      "m1": "بپویید کاین مهتر آهرمن است",
      "m2": "جهان آفرین را به دل دشمن است",
      "verse_number": 51
    },
    {
      "id": "8403a01e-7bf7-4860-a7c2-dabd89e90bd3",
      "m1": "بدان بیبها ناسزاوار پوست",
      "m2": "پدید آمد آوای دشمن ز دوست",
      "verse_number": 52
    },
    {
      "id": "44ee3905-4f88-4a80-9590-0a60e69e0e31",
      "m1": "همیرفت پیش اندرون مرد گرد",
      "m2": "جهانی برو انجمن شد نه خرد",
      "verse_number": 53
    },
    {
      "id": "f482a5dd-6be6-4a36-9c69-5be9d5bebe77",
      "m1": "بدانست خود کافریدون کجاست",
      "m2": "سراندر کشید و همیرفت راست",
      "verse_number": 54
    },
    {
      "id": "f789dfa1-6766-4f72-867f-a4bd828c6a81",
      "m1": "بیامد به درگاه سالار نو",
      "m2": "بدیدندش آنجا و برخاست غو",
      "verse_number": 55
    },
    {
      "id": "362aa335-cae6-4a78-a98d-f737a5aa05d8",
      "m1": "چو آن پوست بر نیزه بر دید کی",
      "m2": "به نیکی یکی اختر افگند پی",
      "verse_number": 56
    },
    {
      "id": "19a37c34-3a74-4fcb-a3a2-699627032a4b",
      "m1": "بیاراست آن را به دیبای روم",
      "m2": "ز گوهر بر و پیکر از زر بوم",
      "verse_number": 57
    },
    {
      "id": "0f1b06da-ff71-474f-87d7-f4a6e90be5d4",
      "m1": "بزد بر سر خویش چون گرد ماه",
      "m2": "یکی فال فرخ پی افکند شاه",
      "verse_number": 58
    },
    {
      "id": "ec32efca-14c3-4ee3-a6de-ac30c5b4c923",
      "m1": "فرو هشت ازو سرخ و زرد و بنفش",
      "m2": "همیخواندش کاویانی درفش",
      "verse_number": 59
    },
    {
      "id": "246915da-1993-49a7-a14f-4ade75bfaa64",
      "m1": "از آن پس هر آنکس که بگرفت گاه",
      "m2": "به شاهی بسر برنهادی کلاه",
      "verse_number": 60
    },
    {
      "id": "8ac696de-93f0-4263-87a0-9fc3bb74fc20",
      "m1": "بران بیبها چرم آهنگران",
      "m2": "برآویختی نو به نو گوهران",
      "verse_number": 61
    },
    {
      "id": "6e0a9288-a725-4e35-a2a2-09d3534a1f6b",
      "m1": "ز دیبای پرمایه و پرنیان",
      "m2": "برآن گونه شد اختر کاویان",
      "verse_number": 62
    },
    {
      "id": "fcd7f3fa-a454-4358-ad4c-404573d41956",
      "m1": "که اندر شب تیره خورشید بود",
      "m2": "جهان را ازو دل پرامید بود",
      "verse_number": 63
    },
    {
      "id": "acd4d97f-81f6-41be-9911-61fe807fe2c6",
      "m1": "بگشت اندرین نیز چندی جهان",
      "m2": "همی بودنی داشت اندر نهان",
      "verse_number": 64
    },
    {
      "id": "407865a9-5733-4931-a259-05012f80d835",
      "m1": "فریدون چو گیتی برآن گونه دید",
      "m2": "جهان پیش ضحاک وارونه دید",
      "verse_number": 65
    },
    {
      "id": "5b34ab67-b824-4475-81f6-35d58aa76f6e",
      "m1": "سوی مادر آمد کمر بر میان",
      "m2": "به سر برنهاده کلاه کیان",
      "verse_number": 66
    },
    {
      "id": "589326ac-a486-4c47-af9e-7a1adf60c960",
      "m1": "که من رفتنیام سوی کارزار",
      "m2": "ترا جز نیایش مباد ایچ کار",
      "verse_number": 67
    },
    {
      "id": "97d0d44b-b7b5-42ab-b2ec-6ab4fd7eca5b",
      "m1": "ز گیتی جهانآفرین را پرست",
      "m2": "ازو دان بهر نیکی زور دست",
      "verse_number": 68
    },
    {
      "id": "ae40de2b-e568-410a-9270-a99a7fedb868",
      "m1": "فرو ریخت آب از مژه مادرش",
      "m2": "همیخواند با خون دل داورش",
      "verse_number": 69
    },
    {
      "id": "71ed93bc-36a3-4563-9571-632c3012c477",
      "m1": "به یزدان همیگفت زنهار من",
      "m2": "سپردم ترا ای جهاندار من",
      "verse_number": 70
    },
    {
      "id": "9ac95335-29fd-4e50-9b48-f0136cd09a66",
      "m1": "بگردان ز جانش بد جاودان",
      "m2": "بپرداز گیتی ز نابخردان",
      "verse_number": 71
    },
    {
      "id": "76a262c5-890f-4b47-aa98-6caf2434b7df",
      "m1": "فریدون سبک ساز رفتن گرفت",
      "m2": "سخن را ز هر کس نهفتن گرفت",
      "verse_number": 72
    },
    {
      "id": "901216b8-b112-4a97-bc7b-ed4f7cd17c17",
      "m1": "برادر دو بودش دو فرخ همال",
      "m2": "ازو هر دو آزاده مهتر به سال",
      "verse_number": 73
    },
    {
      "id": "b6a45052-0c5b-4251-bfd1-094475d4148d",
      "m1": "یکی بود ازیشان کیانوش نام",
      "m2": "دگر نام پرمایهٔ شادکام",
      "verse_number": 74
    },
    {
      "id": "298effb1-6c1f-4232-a21a-b55937d7d846",
      "m1": "فریدون بریشان زبان برگشاد",
      "m2": "که خرم زئید ای دلیران و شاد",
      "verse_number": 75
    },
    {
      "id": "0c7f5f2b-add2-41dc-b147-a6fcf9f0424b",
      "m1": "که گردون نگردد به جز بر بهی",
      "m2": "به ما بازگردد کلاه مهی",
      "verse_number": 76
    },
    {
      "id": "d717839b-455f-471f-b32b-1e64734b9a5a",
      "m1": "بیارید داننده آهنگران",
      "m2": "یکی گرز فرمود باید گران",
      "verse_number": 77
    },
    {
      "id": "0bae041c-6ee7-42f8-b3a5-7dcc71803b7f",
      "m1": "چو بگشاد لب هر دو بشتافتند",
      "m2": "به بازار آهنگران تاختند",
      "verse_number": 78
    },
    {
      "id": "3ce8ebb2-7fd4-409d-9d54-758ee9cff7c1",
      "m1": "هر آنکس کزان پیشه بد نامجوی",
      "m2": "به سوی فریدون نهادند روی",
      "verse_number": 79
    },
    {
      "id": "d0984998-7a94-467d-b1e5-0541614bba01",
      "m1": "جهانجوی پرگار بگرفت زود",
      "m2": "وزان گرز پیکر بدیشان نمود",
      "verse_number": 80
    },
    {
      "id": "42b0550a-8c02-426d-a77e-9084be9cb885",
      "m1": "نگاری نگارید بر خاک پیش",
      "m2": "همیدون بسان سر گاومیش",
      "verse_number": 81
    },
    {
      "id": "73632653-1261-4986-bd84-85d615a0caf1",
      "m1": "بر آن دست بردند آهنگران",
      "m2": "چو شد ساخته کار گرز گران",
      "verse_number": 82
    },
    {
      "id": "3c6aa840-83b1-456d-befc-d7dcbb664758",
      "m1": "به پیش جهانجوی بردند گرز",
      "m2": "فروزان به کردار خورشید برز",
      "verse_number": 83
    },
    {
      "id": "71a08fa5-d2bd-42b5-b7bd-7296ae4e66b5",
      "m1": "پسند آمدش کار پولادگر",
      "m2": "ببخشیدشان جامه و سیم و زر",
      "verse_number": 84
    },
    {
      "id": "5832e88b-756e-4f85-a7b7-72fa9cd66fbd",
      "m1": "بسی کردشان نیز فرخ امید",
      "m2": "بسی دادشان مهتری را نوید",
      "verse_number": 85
    },
    {
      "id": "fed01868-60fc-4b63-8a35-e64f338008fb",
      "m1": "که گر اژدها را کنم زیر خاک",
      "m2": "بشویم شما را سر از گرد پاک",
      "verse_number": 86
    }
  ],
