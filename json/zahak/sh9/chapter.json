{
  "id": "4c5fb974-732b-4ddf-83f2-eb373c703319",
  "title": "بخش ۹ - سفر فریدون و سپاهش از اروندرود تا بیت‌المقدس پایتخت ضحاک",
  "verses": [
    {
      "id": "d1499ae8-c368-44a9-b366-dd4687696301",
      "m1": "چو آمد به نزدیک اروندرود",
      "m2": "فرستاد زی رودبانان درود",
      "verse_number": 1
    },
    {
      "id": "83a7685b-607f-4edc-a11b-7b3cffdff323",
      "m1": "بران رودبان گفت پیروز شاه",
      "m2": "که کشتی برافگن هم اکنون به راه",
      "verse_number": 2
    },
    {
      "id": "259e0b00-5e01-4159-8504-e8293a918275",
      "m1": "مرا با سپاهم بدان سو رسان",
      "m2": "از اینها کسی را بدین سو ممان",
      "verse_number": 3
    },
    {
      "id": "e6c81bd5-2318-442c-87b5-0af14dfe03d4",
      "m1": "بدان تا گذر یابم از روی آب",
      "m2": "به کشتی و زورق هم اندر شتاب",
      "verse_number": 4
    },
    {
      "id": "14c80a07-e0a4-46e1-ae56-f7d22f068415",
      "m1": "نیاورد کشتی نگهبان رود",
      "m2": "نیامد بگفت فریدون فرود",
      "verse_number": 5
    },
    {
      "id": "de7c40ea-bd7a-42b3-bdd3-2de5bc2da020",
      "m1": "چنین داد پاسخ که شاه جهان",
      "m2": "چنین گفت با من سخن در نهان",
      "verse_number": 6
    },
    {
      "id": "2e90f928-e701-430b-bd23-6a323dbe537a",
      "m1": "که مگذار یک پشه را تا نخست",
      "m2": "جوازی بیابی و مهری درست",
      "verse_number": 7
    },
    {
      "id": "63feaf5b-dbd8-4268-84c4-3e3f120c5b9f",
      "m1": "فریدون چو بشنید شد خشمناک",
      "m2": "ازان ژرف دریا نیامدش باک",
      "verse_number": 8
    },
    {
      "id": "fe326b3e-aead-43fd-9984-942a0f10b284",
      "m1": "هم آنگه میان کیانی ببست",
      "m2": "بران بارهٔ تیزتک بر نشست",
      "verse_number": 9
    },
    {
      "id": "b40cf57d-eb7b-4e57-a944-941d8b2bcb8b",
      "m1": "سرش تیز شد کینه و جنگ را",
      "m2": "به آب اندر افگند گلرنگ را",
      "verse_number": 10
    },
    {
      "id": "fb392044-dd74-44b4-83e5-f8fc1eda2af1",
      "m1": "ببستند یارانش یکسر کمر",
      "m2": "همیدون به دریا نهادند سر",
      "verse_number": 11
    },
    {
      "id": "7dd948da-2b90-4d9f-9873-d5cc3967f97a",
      "m1": "بر آن بادپایان با آفرین",
      "m2": "به آب اندرون غرقه کردند زین",
      "verse_number": 12
    },
    {
      "id": "7f75f70b-dfc9-40bf-ba11-3782d8143949",
      "m1": "به خشکی رسیدند سر کینه جوی",
      "m2": "به بیتالمقدس نهادند روی",
      "verse_number": 13
    },
    {
      "id": "73d55f2c-dfe3-4945-bbd1-0916b522d891",
      "m1": "که بر پهلوانی زبان راندند",
      "m2": "همی کنگ دژهودجش خواندند",
      "verse_number": 14
    },
    {
      "id": "7433cb34-02f3-4b8e-a0ed-2d2e51bd15b5",
      "m1": "به تازی کنون خانهٔ پاک دان",
      "m2": "برآورده ایوان ضحاک دان",
      "verse_number": 15
    },
    {
      "id": "2116771f-88d9-4a7f-b350-ea25fa15f7af",
      "m1": "چو از دشت نزدیک شهر آمدند",
      "m2": "کزان شهر جوینده بهر آمدند",
      "verse_number": 16
    },
    {
      "id": "e5cc90ee-ecef-4d99-852d-cd65b16f8bf2",
      "m1": "ز یک میل کرد آفریدون نگاه",
      "m2": "یکی کاخ دید اندر آن شهر شاه",
      "verse_number": 17
    },
    {
      "id": "1f97e849-6000-4779-86e1-38e80b611827",
      "m1": "فروزنده چون مشتری بر سپهر",
      "m2": "همه جای شادی و آرام و مهر",
      "verse_number": 18
    },
    {
      "id": "5557b8c6-ef72-475f-bf2f-4675455b4dba",
      "m1": "که ایوانش برتر ز کیوان نمود",
      "m2": "که گفتی ستاره بخواهد بسود",
      "verse_number": 19
    },
    {
      "id": "8433ac7d-e374-4bf4-b642-380b2e36f321",
      "m1": "بدانست کان خانهٔ اژدهاست",
      "m2": "که جای بزرگی و جای بهاست",
      "verse_number": 20
    },
    {
      "id": "ae23b1e7-8234-4295-b988-01e0d1c28987",
      "m1": "به یارانش گفت آنکه بر تیره خاک",
      "m2": "برآرد چنین برز جای از مغاک",
      "verse_number": 21
    },
    {
      "id": "b30cc601-f29f-49c1-b6a9-28b36c0ff358",
      "m1": "بترسم همی زانکه با او جهان",
      "m2": "مگر راز دارد یکی در نهان",
      "verse_number": 22
    },
    {
      "id": "3a872a1f-614c-405a-9404-c30e147e1ec4",
      "m1": "بباید که ما را بدین جای تنگ",
      "m2": "شتابیدن آید به روز درنگ",
      "verse_number": 23
    },
    {
      "id": "e9347bf4-0fa2-4446-8652-bab1557d8fff",
      "m1": "بگفت و به گرز گران دست برد",
      "m2": "عنان بارهٔ تیزتک را سپرد",
      "verse_number": 24
    },
    {
      "id": "fcd3f77f-3cd7-4466-9b73-142ea0a83777",
      "m1": "تو گفتی یکی آتشستی درست",
      "m2": "که پیش نگهبان ایوان برست",
      "verse_number": 25
    },
    {
      "id": "68c95a5d-5f42-4e0e-974b-48e65b9d9624",
      "m1": "گران گرز برداشت از پیش زین",
      "m2": "تو گفتی همی بر نوردد زمین",
      "verse_number": 26
    },
    {
      "id": "bfabd867-3bc9-4fc4-a83e-b784153e80ff",
      "m1": "کس از روزبانان به در بر نماند",
      "m2": "فریدون جهان آفرین را بخواند",
      "verse_number": 27
    },
    {
      "id": "ffbda93d-9dc6-4163-8335-d7426f135355",
      "m1": "به اسب اندر آمد به کاخ بزرگ",
      "m2": "جهان ناسپرده جوان سترگ",
      "verse_number": 28
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 28
  }
}