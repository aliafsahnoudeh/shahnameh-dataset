{
  "id": "e4b72fcc-0297-41c4-9a0d-c8ec6f29d7c3",
  "title": "بخش ۵ - کشته شدن گاو برمایه",
  "verses": [
    {
      "id": "c746e4d2-34cc-4d63-8a3e-1f28dd38a001",
      "m1": "نشد سیر ضحاک از آن جست جوی",
      "m2": "شد از گاو گیتی پر از گفتگوی",
      "verse_number": 1
    },
    {
      "id": "1fcbd640-baed-4ffd-bb80-307db1897944",
      "m1": "دوان مادر آمد سوی مرغزار",
      "m2": "چنین گفت با مرد زنهاردار",
      "verse_number": 2
    },
    {
      "id": "c6035ca7-d972-4d72-9f02-42f89fc445c8",
      "m1": "که اندیشهای در دلم ایزدی",
      "m2": "فراز آمدهست از ره بخردی",
      "verse_number": 3
    },
    {
      "id": "ca8fd9be-d1ef-49e3-95f9-6b3a0b9fd449",
      "m1": "همی کرد باید کزین چاره نیست",
      "m2": "که فرزند و شیرین روانم یکیست",
      "verse_number": 4
    },
    {
      "id": "ec855151-ddd9-4a59-9409-aa411e356fef",
      "m1": "ببرّم پی از خاک جادوستان",
      "m2": "شوم تا سر مرز هندوستان",
      "verse_number": 5
    },
    {
      "id": "e43b5cfb-f0af-4515-8de3-d7b84e080c3d",
      "m1": "شوم ناپدید از میان گروه",
      "m2": "برم خوبرخ را به البرز کوه",
      "verse_number": 6
    },
    {
      "id": "304b2ee9-7576-4f7e-86b1-1ad6998aeb5d",
      "m1": "بیاورد فرزند را چون نوند",
      "m2": "چو مرغان بر آن تیغ کوه بلند",
      "verse_number": 7
    },
    {
      "id": "791c8136-14ac-42ff-a1ce-53a18ff1a047",
      "m1": "یکی مرد دینی بر آن کوه بود",
      "m2": "که از کار گیتی بیاندوه بود",
      "verse_number": 8
    },
    {
      "id": "7258420e-7e89-4545-9e65-b99c6cc02a76",
      "m1": "فرانک بدو گفت کای پاکدین",
      "m2": "منم سوگواری ز ایران زمین",
      "verse_number": 9
    },
    {
      "id": "061ee426-4edb-478d-aab7-d0e6529c5e38",
      "m1": "بدان کاین گرانمایه فرزند من",
      "m2": "همی بود خواهد سر انجمن",
      "verse_number": 10
    },
    {
      "id": "1bbb378a-7378-4151-b96d-215845aaee36",
      "m1": "تو را بود باید نگهبان او",
      "m2": "پدروار لرزنده بر جان او",
      "verse_number": 11
    },
    {
      "id": "737cda19-23a8-40b8-ace8-6be07f2d74d2",
      "m1": "پذیرفت فرزند او نیکمرد",
      "m2": "نیاورد هرگز بدو باد سرد",
      "verse_number": 12
    },
    {
      "id": "b336a2f3-3afc-4e41-a8e6-dc4ea4e9d1d7",
      "m1": "خبر شد به ضحاک بدروزگار",
      "m2": "از آن گاو برمایه و مرغزار",
      "verse_number": 13
    },
    {
      "id": "7976f4dc-5515-4a6d-b9aa-fa1a4a5fd85b",
      "m1": "بیامد از آن کینه چون پیل مست",
      "m2": "مر آن گاو برمایه را کرد پست",
      "verse_number": 14
    },
    {
      "id": "24d0fc78-6c88-476e-8f7a-a0e55ea80d5b",
      "m1": "همه هر چه دید اندر او چارپای",
      "m2": "بیفگند و زیشان بپرداخت جای",
      "verse_number": 15
    },
    {
      "id": "15101c21-065b-48f7-a66e-2e625c20c32a",
      "m1": "سبک سوی خان فریدون شتافت",
      "m2": "فراوان پژوهید و کس را نیافت",
      "verse_number": 16
    },
    {
      "id": "9c2af4a3-ebf4-4bad-86e6-85b5936c4d89",
      "m1": "به ایوان او آتش اندر فگند",
      "m2": "ز پای اندر آورد کاخ بلند",
      "verse_number": 17
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 17
  },
  "order_in_parent": 5
}