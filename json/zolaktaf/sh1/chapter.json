{
  "id": "d0be08a9-9a91-4780-9bd8-9512557914bd",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "767c115b-75ef-4960-b509-bd0e0930de81",
      "m1": "به شاهی برو آفرین خواندند",
      "m2": "همه مهتران گوهر افشاندند",
      "verse_number": 1
    },
    {
      "id": "a569db35-6e8a-480c-bc30-70c2c8749bb8",
      "m1": "یکی موبدی بود شهرو به نام",
      "m2": "خردمند و شایسته و شادکام",
      "verse_number": 2
    },
    {
      "id": "7cf6a512-f2f6-4cd5-8179-12f720a8909a",
      "m1": "بیامد به کرسی زرین نشست",
      "m2": "میان پیش او بندگی را ببست",
      "verse_number": 3
    },
    {
      "id": "b23145ac-5473-4a2b-b523-31b90e968bbc",
      "m1": "جهان را همی داشت با داد و رای",
      "m2": "سپه را به هر نیک و بد رهنمای",
      "verse_number": 4
    },
    {
      "id": "3036f4ef-35ee-4b26-a07e-ad3bc0894aa9",
      "m1": "پراگنده گنج و سپاه ورا",
      "m2": "بیاراست ایوان و گاه ورا",
      "verse_number": 5
    },
    {
      "id": "7660dcce-3360-4828-8083-309c3601d97d",
      "m1": "چنین تا برآمد برین پنج سال",
      "m2": "برافراخت آن کودک خرد یال",
      "verse_number": 6
    },
    {
      "id": "8f138932-91ed-4ba9-858e-bd9931f8d233",
      "m1": "نشسته شبی شاه در طیسفون",
      "m2": "خردمند موبد به پیش اندرون",
      "verse_number": 7
    },
    {
      "id": "e3e6a166-6f58-4209-90c3-3057bbff7ac8",
      "m1": "بدانگه که خورشید برگشت زرد",
      "m2": "پدید آمد آن چادر لاژورد",
      "verse_number": 8
    },
    {
      "id": "331b7cf0-3455-4a20-9585-7d5a8b94f485",
      "m1": "خروش آمد از راه اروندرود",
      "m2": "به موبد چنین گفت هست این درود",
      "verse_number": 9
    },
    {
      "id": "450f57e0-4eec-4afa-b8e6-d05d0e765373",
      "m1": "چنین گفت موبد بران شاه خرد",
      "m2": "که ای پاکدل نیک پی شاه گرد",
      "verse_number": 10
    },
    {
      "id": "1a6a762c-b9be-43c5-9032-225875596c32",
      "m1": "کنون مرد بازاری و چاره جوی",
      "m2": "ز کلبه سوی خانه بنهاد روی",
      "verse_number": 11
    },
    {
      "id": "f6e9434a-08ca-4668-a1f9-fc2da8e390bc",
      "m1": "چو بر دجله بر یکدگر بگذرند",
      "m2": "چنین تنگ پل را به پی بسپرند",
      "verse_number": 12
    },
    {
      "id": "8041dd20-36d3-4cc0-ad16-0cd8777bbed0",
      "m1": "بترسد چنین هرکس از بیم کوس",
      "m2": "چنین برخروشند چون زخم کوس",
      "verse_number": 13
    },
    {
      "id": "ad7afe95-392d-4eb4-9c66-f4e4a4e871af",
      "m1": "چنین گفت شاپور با موبدان",
      "m2": "که ای پرهنر نامور بخردان",
      "verse_number": 14
    },
    {
      "id": "88db8c39-7f79-4de8-8448-c37ddc63b85f",
      "m1": "پلی دیگر اکنون بباید زدن",
      "m2": "شدن را یکی راه باز آمدن",
      "verse_number": 15
    },
    {
      "id": "86a94447-f3e7-4f1a-b140-da724afa8c85",
      "m1": "بدان تا چنین زیردستان ما",
      "m2": "گر از لشکری در پرستان ما",
      "verse_number": 16
    },
    {
      "id": "01fa4b0e-428a-436f-8c02-64450f7f6591",
      "m1": "به رفتن نباشند زین سان به رنج",
      "m2": "درم داد باید فراوان ز گنج",
      "verse_number": 17
    },
    {
      "id": "ba9e7d92-98d1-4389-a951-69ad3adbfc05",
      "m1": "همه موبدان شاد گشتند سخت",
      "m2": "که سبز آمد آن نارسیده درخت",
      "verse_number": 18
    },
    {
      "id": "c1b424fe-3f65-419d-aebd-14d1d00f2e68",
      "m1": "یکی پل بفرمود موبد دگر",
      "m2": "به فرمان آن کودک تاجور",
      "verse_number": 19
    },
    {
      "id": "52bfd16c-a27b-4350-9be9-076d3736dbe8",
      "m1": "ازو شادمان شد دل مادرش",
      "m2": "بیاورد فرهنگ جویان برش",
      "verse_number": 20
    },
    {
      "id": "03aa75ba-c7e7-4b6c-8d85-e6c5b7f0e221",
      "m1": "به زودی به فرهنگ جایی رسید",
      "m2": "کز آموزگاران سراندر کشید",
      "verse_number": 21
    },
    {
      "id": "91ad2943-3ad1-43f4-b66f-ed1eaa7f19a8",
      "m1": "چو بر هفت شد رسم میدان نهاد",
      "m2": "همآورد و هم رسم چوگان نهاد",
      "verse_number": 22
    },
    {
      "id": "7ec0fc04-386d-4a19-b7f3-ea61c602d174",
      "m1": "بهشتم شد آیین تخت و کلاه",
      "m2": "تو گفتی کمر بست بهرامشاه",
      "verse_number": 23
    },
    {
      "id": "a1554263-991f-456e-8aef-685e00521903",
      "m1": "تن خویش را از در فخر کرد",
      "m2": "نشستنگه خود به اصطخر کرد",
      "verse_number": 24
    },
    {
      "id": "57d962ad-fa97-403b-9171-0252ab16abcf",
      "m1": "بر آیین فرخ نیاکان خویش",
      "m2": "گزیده سرافراز و پاکان خویش",
      "verse_number": 25
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 25
  },
