{
  "id": "c3dfe94f-1ad3-44fb-92a7-a8f1d8d73aab",
  "title": "بخش ۱۵",
  "verses": [
    {
      "id": "3d4c0b62-adb6-42d2-803b-e57b52749d9c",
      "m1": "ز شاهیش بگذشت پنجاه سال",
      "m2": "که اندر زمانه نبودش همال",
      "verse_number": 1
    },
    {
      "id": "4edb4208-9606-4b1e-86ab-7eb43f97c6c5",
      "m1": "بیامد یکی مرد گویا ز چین",
      "m2": "که چون او مصور نبیند زمین",
      "verse_number": 2
    },
    {
      "id": "7bf9b3a9-d4c7-435f-a67b-49e5c9fe3b02",
      "m1": "بدان چربه دستی رسیده به کام",
      "m2": "یکی برمنش مرد مانی به نام",
      "verse_number": 3
    },
    {
      "id": "cf980432-db9c-436b-9245-72dbced57741",
      "m1": "به صورتگری گفت پیغمبرم",
      "m2": "ز دینآوران جهان برترم",
      "verse_number": 4
    },
    {
      "id": "edb3c507-41ec-450f-aa09-7fccc45169ad",
      "m1": "ز چین نزد شاپور شد بار خواست",
      "m2": "به پیغمبری شاه را یار خواست",
      "verse_number": 5
    },
    {
      "id": "01d099d8-9e33-4447-a175-dccf8de492e7",
      "m1": "سخن گفت مرد گشادهزبان",
      "m2": "جهاندار شد زان سخن بدگمان",
      "verse_number": 6
    },
    {
      "id": "5919a8b3-8594-424c-a68d-aff6b17b9b14",
      "m1": "سرش تیز شد موبدان را بخواند",
      "m2": "زمانی فراوان سخنها براند",
      "verse_number": 7
    },
    {
      "id": "0fc66367-2c3b-4d94-af85-d6643cec09af",
      "m1": "کزین مرد چینی و چیرهزبان",
      "m2": "فتادستم از دین او در گمان",
      "verse_number": 8
    },
    {
      "id": "7ad243ec-2bf8-43cc-96e8-5223ff489325",
      "m1": "بگویید و هم زو سخن بشنوید",
      "m2": "مگر خود به گفتار او بگروید",
      "verse_number": 9
    },
    {
      "id": "c73660e3-2dc9-4b67-8166-fef4cdbd5fe0",
      "m1": "بگفتند کین مرد صورت پرست",
      "m2": "نه بر مایهٔ موبدان موبه دست",
      "verse_number": 10
    },
    {
      "id": "f9f14958-908d-44fe-8f3f-7bcac0c0ef6f",
      "m1": "زمانی سخن بشنو او را بخوان",
      "m2": "چو بیند ورا کی گشاید زبان",
      "verse_number": 11
    },
    {
      "id": "bb3a8d01-630b-4d1e-b5fe-08cda0f7672f",
      "m1": "بفرمود تا موبد آمدش پیش",
      "m2": "سخن گفت با او ز اندازه بیش",
      "verse_number": 12
    },
    {
      "id": "7d303f8a-1ae8-4eda-9fad-33832af1ec63",
      "m1": "فرو ماند مانی میان سخن",
      "m2": "به گفتار موبد ز دین کهن",
      "verse_number": 13
    },
    {
      "id": "4fcec9ac-7481-4566-9099-8995b9d4569d",
      "m1": "بدو گفت کای مرد صورت پرست",
      "m2": "به یزدان چرا آختی خیرهدست",
      "verse_number": 14
    },
    {
      "id": "d9b8941c-3d4a-4887-89c2-b074b93676f2",
      "m1": "کسی کو بلند آسمان آفرید",
      "m2": "بدو در مکان و زمان آفرید",
      "verse_number": 15
    },
    {
      "id": "cfaedcff-ce9b-4839-b86b-f5e16b7be7aa",
      "m1": "کجا نور و ظلمت بدو اندرست",
      "m2": "ز هر گوهری گوهرش برترست",
      "verse_number": 16
    },
    {
      "id": "be886457-504d-4963-9224-8c72c48eba59",
      "m1": "شب و روز و گردان سپهر بلند",
      "m2": "کزویت پناهست و زویت گزند",
      "verse_number": 17
    },
    {
      "id": "7f625e49-361d-45bc-b9a9-b2c50c5b62c3",
      "m1": "همه کردهٔ کردگارست و بس",
      "m2": "جزو کرد نتواند این کرده کس",
      "verse_number": 18
    },
    {
      "id": "95d838ed-c733-4a36-ac5f-a63cbf72862a",
      "m1": "به برهان صورت چرا بگروی",
      "m2": "همی پند دینآوران نشنوی",
      "verse_number": 19
    },
    {
      "id": "3200b14c-0523-4e41-9633-1fc88553f40e",
      "m1": "همه جفت و همتا و یزدان یکیست",
      "m2": "جز از بندگی کردنت رای نیست",
      "verse_number": 20
    },
    {
      "id": "5d99c7d3-77b2-42b3-871f-f47be61e5d57",
      "m1": "گرین صورت کرده جنبان کنی",
      "m2": "سزد گر ز جنبده برهان کنی",
      "verse_number": 21
    },
    {
      "id": "20f6258f-7d94-4fc8-9675-812e13a4c46f",
      "m1": "ندانی که برهان نیاید به کار",
      "m2": "ندارد کسی این سخن استوار",
      "verse_number": 22
    },
    {
      "id": "d955af79-6949-4950-9a2a-c8753fae9360",
      "m1": "اگر اهرمن جفت یزدان بدی",
      "m2": "شب تیره چون روز خندان بدی",
      "verse_number": 23
    },
    {
      "id": "b2b989b5-d304-4ed8-8673-238444e6cd71",
      "m1": "همه ساله بودی شب و روز راست",
      "m2": "به گردش فزونی نبودی نه کاست",
      "verse_number": 24
    },
    {
      "id": "1d8476f3-2c2f-4c94-b88d-b09583b80803",
      "m1": "نگنجد جهانآفرین در گمان",
      "m2": "که او برترست از زمان و مکان",
      "verse_number": 25
    },
    {
      "id": "7b95c125-a199-4356-b340-b56e9dcac65e",
      "m1": "سخنهای دیوانگانست و بس",
      "m2": "بدینبر نباشد ترا یار کس",
      "verse_number": 26
    },
    {
      "id": "554b9ae5-7df5-47f3-936e-5a61c84296bc",
      "m1": "سخنها جزین نیز بسیار گفت",
      "m2": "که با دانش و مردمی بود جفت",
      "verse_number": 27
    },
    {
      "id": "d3501b5e-5231-4a16-85ee-e69db0dc329d",
      "m1": "فرو ماند مانی ز گفتار اوی",
      "m2": "بپژمرد شاداب بازار اوی",
      "verse_number": 28
    },
    {
      "id": "5473f8c1-bcf6-40b4-97b7-3405e7289582",
      "m1": "ز مانی برآشفت پس شهریار",
      "m2": "برو تنگ شد گردش روزگار",
      "verse_number": 29
    },
    {
      "id": "76787e0e-20ce-4929-83b7-67c86d00291e",
      "m1": "بفرمود پس تاش برداشتند",
      "m2": "به خواری ز درگاه بگذاشتند",
      "verse_number": 30
    },
    {
      "id": "597007dd-939c-430e-978f-f88216d9afc2",
      "m1": "چنین گفت کاین مرد صورتپرست",
      "m2": "نگنجد همی در سرای نشست",
      "verse_number": 31
    },
    {
      "id": "93278743-0796-45c7-a1e9-25d9ed2ba513",
      "m1": "چو آشوب و آرام گیتی به دوست",
      "m2": "بباید کشیدن سراپاش پوست",
      "verse_number": 32
    },
    {
      "id": "ecdab08d-c26b-41c2-85e9-b3f81cf521f5",
      "m1": "همان خامش آگنده باید به کاه",
      "m2": "بدان تا نجوید کس این پایگاه",
      "verse_number": 33
    },
    {
      "id": "3b20ceb5-ed4f-4d62-9a86-ae38decb2a4d",
      "m1": "بیاویختند از در شارستان",
      "m2": "دگر پیش دیوار بیمارستان",
      "verse_number": 34
    },
    {
      "id": "cd382d92-e856-4635-8314-aafed34287f5",
      "m1": "جهانی برو آفرین خواندند",
      "m2": "همی خاک بر کشته افشاندند",
      "verse_number": 35
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 35
  },
  "order_in_parent": 15
}