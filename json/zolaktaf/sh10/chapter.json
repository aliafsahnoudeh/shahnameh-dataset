{
  "id": "c6b4b877-49ee-4638-843e-04c39bf9b271",
  "title": "بخش ۱۰",
  "verses": [
    {
      "id": "bfe12acc-ee73-4e85-90e4-60be55543b3d",
      "m1": "بسی برنیامد برین روزگار",
      "m2": "که شد مردم لشکری شش هزار",
      "verse_number": 1
    },
    {
      "id": "10bc6ddb-a64c-491c-b46d-32d2fcb81b90",
      "m1": "فرستاد شاپور کارآگهان",
      "m2": "سوی طیسفون کاردیده مهان",
      "verse_number": 2
    },
    {
      "id": "6a7d347e-875c-4da3-b0cf-d12218cd00a1",
      "m1": "بدان تا ز قیصر دهند آگهی",
      "m2": "ازان برز درگاه با فرهی",
      "verse_number": 3
    },
    {
      "id": "cce63938-456d-4609-8ac9-1337fcdc8b27",
      "m1": "برفتند کارآگهان ناگهان",
      "m2": "نهفته بجستند کار جهان",
      "verse_number": 4
    },
    {
      "id": "58d56f5f-dd2e-4a13-8743-9ed4ef54d2af",
      "m1": "بدیدند هرگونه بازآمدند",
      "m2": "بر شاه گردنفراز آمدند",
      "verse_number": 5
    },
    {
      "id": "e8ee8548-2316-40fc-85fc-f0f3ef9feb99",
      "m1": "که قیصر ز می خوردن و از شکار",
      "m2": "همی هیچ نندیشد از کارزار",
      "verse_number": 6
    },
    {
      "id": "55c384ea-97ae-49a5-bc32-6d6c54d0d13c",
      "m1": "سپاهش پراگنده از هر سوی",
      "m2": "به تاراج کردن به هر پهلوی",
      "verse_number": 7
    },
    {
      "id": "285710eb-18c5-425f-9f87-cfa5ea14a918",
      "m1": "نه روزش طلایه نه شب پاسبان",
      "m2": "سپاهش همه چون رمه بیشبان",
      "verse_number": 8
    },
    {
      "id": "4dba2773-5632-4d4f-9fb8-a2e08b616421",
      "m1": "نبیند همی دشمن از هیچ روی",
      "m2": "پسند آمدش زیستن برزوی",
      "verse_number": 9
    },
    {
      "id": "7e60197f-712b-4d20-b21c-cecdfbc385e0",
      "m1": "چو شاپور بشنید زان شاد شد",
      "m2": "همه رنجها بر دلش باد شد",
      "verse_number": 10
    },
    {
      "id": "745421e8-69f0-4bb1-b72f-da91e6344731",
      "m1": "گزین کرد ز ایرانیان سه هزار",
      "m2": "زرهدار و برگستوان ور سوار",
      "verse_number": 11
    },
    {
      "id": "ac77754a-79de-4583-98e5-55222a0c66b8",
      "m1": "شب تیره جوشن به بر در کشید",
      "m2": "سپه را سوی طیسفون برکشید",
      "verse_number": 12
    },
    {
      "id": "da9a72e1-fbf8-4873-9f5f-3376e3ba4406",
      "m1": "به تیره شبان تیز بشتافتی",
      "m2": "چو روشن شدی روی برتافتی",
      "verse_number": 13
    },
    {
      "id": "59b63386-f808-4b66-baee-735967b0f954",
      "m1": "همی راندی در بیابان و کوه",
      "m2": "بران راه بیراه خود با گروه",
      "verse_number": 14
    },
    {
      "id": "ff3b0520-4b2d-45cf-b7a9-6613366a0006",
      "m1": "فزون از دو فرسنگ پیش سپاه",
      "m2": "همی دیدهبان بود بیراه و راه",
      "verse_number": 15
    },
    {
      "id": "9d7b8d32-6e48-4b88-8417-39c9c78d2b6e",
      "m1": "چنین تا به نزدیکی طیسفون",
      "m2": "طلایه همی راند پیش اندرون",
      "verse_number": 16
    },
    {
      "id": "6cf4b65e-7352-4cb7-9ff8-341607a10cfc",
      "m1": "به لشکر گه آمد گذشته دو پاس",
      "m2": "ز قیصر نبودش به دل در هراس",
      "verse_number": 17
    },
    {
      "id": "b39124e8-9180-4ad6-a710-a60eb8cda7b6",
      "m1": "ازان مرز بشنید آواز کوس",
      "m2": "غو پاسبانان چو بانگ خروس",
      "verse_number": 18
    },
    {
      "id": "d86d53f6-7695-4db6-90bb-36f628847e80",
      "m1": "پر از خیمه یک دشت و خرگاه بود",
      "m2": "ازان تاختن خود که آگاه بود",
      "verse_number": 19
    },
    {
      "id": "2de02d5d-9a60-40e6-b7d5-9aea0b73f7d0",
      "m1": "ز می مست قیصر به پردهسرای",
      "m2": "ز لشکر نبود اندران مرز جای",
      "verse_number": 20
    },
    {
      "id": "b262bc3e-5b9d-40d7-8c50-fd6441eb6269",
      "m1": "چو گیتی چنان دید شاپور گرد",
      "m2": "عنان کیی بارگی را سپرد",
      "verse_number": 21
    },
    {
      "id": "a45d9333-c934-40f5-9241-e65cf889bebe",
      "m1": "سپه را به لشکرگه اندر کشید",
      "m2": "بزد دست و گرز گران برکشید",
      "verse_number": 22
    },
    {
      "id": "ed3a74ac-b250-47a7-8977-77164ac7119a",
      "m1": "به ابر اندر آمد دم کرنای",
      "m2": "جرنگیدن گرز و هندی درای",
      "verse_number": 23
    },
    {
      "id": "378f1f77-d7cb-48ca-80be-1df9a0b190a6",
      "m1": "دهاده برآمد ز هر پهلوی",
      "m2": "چکاچاک برخاست از هر سوی",
      "verse_number": 24
    },
    {
      "id": "6c201160-6f3e-4d68-a262-5adde265a6e9",
      "m1": "تو گفتی همی آسمان بترکید",
      "m2": "ز خورشید خون بر هوا برچکید",
      "verse_number": 25
    },
    {
      "id": "37934dcb-1836-4e50-8797-bd6491f76d8e",
      "m1": "درفشیدن کاویانی درفش",
      "m2": "شب تیره و تیغهای بنفش",
      "verse_number": 26
    },
    {
      "id": "872b4063-2d04-44fb-8d64-aa1405296611",
      "m1": "تو گفتی هوا تیغ بارد همی",
      "m2": "جهان یکسره میغ دارد همی",
      "verse_number": 27
    },
    {
      "id": "9255272b-4957-44b4-8006-f4374049bb3b",
      "m1": "ز گرد سپه کوه شد ناپدید",
      "m2": "ستاره همی دامن اندرکشید",
      "verse_number": 28
    },
    {
      "id": "78f1b597-a9a7-482d-b0d0-8b93fb7a4ec4",
      "m1": "سراپردهٔ قیصر بیهنر",
      "m2": "همی کرد شاپور زیر و زبر",
      "verse_number": 29
    },
    {
      "id": "50074bf8-6007-47e1-8df8-504b89b0543d",
      "m1": "به هر گوشهای آتش اندر زدند",
      "m2": "همی آسمان بر زمین بر زدند",
      "verse_number": 30
    },
    {
      "id": "a26b88d5-74e8-43e5-8018-1acd8de6ecde",
      "m1": "سرانجام قیصر گرفتار شد",
      "m2": "وزو اختر نیک بیزار شد",
      "verse_number": 31
    },
    {
      "id": "782007a6-fee5-4bec-89cf-77b255190a87",
      "m1": "وزان خیمهها نامداران اوی",
      "m2": "دلیر و گزیده سواران اوی",
      "verse_number": 32
    },
    {
      "id": "c4327897-e097-4b73-b789-ec76932d60cb",
      "m1": "گرفتند بسیار و کردند بند",
      "m2": "چنین است کردار چرخ بلند",
      "verse_number": 33
    },
    {
      "id": "50921a78-3a47-4d47-878d-6308d3d921b6",
      "m1": "گهی زو فراز آید و گه نشیب",
      "m2": "گهی شادمانی و گاهی نهیب",
      "verse_number": 34
    },
    {
      "id": "71efbd60-5560-4a6e-b516-aacc501f8d39",
      "m1": "بیآزاری و مردمی بهترست",
      "m2": "کرا کردگار جهان یاورست",
      "verse_number": 35
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 35
  }
}