{
  "id": "9a32d745-c607-4616-be9c-bcbf52655ddc",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "05a62954-2426-4a51-861b-8ef74b13137a",
      "m1": "برانوش چون پاسخ نامه دید",
      "m2": "ز شادی دل پاکتن بردمید",
      "verse_number": 1
    },
    {
      "id": "ea3cf3c3-a501-4cda-b8ae-ed08d593ce47",
      "m1": "بفرمود تا نامداران روم",
      "m2": "برفتند صد مرد زان مرز و بوم",
      "verse_number": 2
    },
    {
      "id": "32a7cf94-d6f0-4897-894f-09998b684d70",
      "m1": "درم بار کردند خروار شست",
      "m2": "هم از گوهر و جامهٔ بر نشست",
      "verse_number": 3
    },
    {
      "id": "2630c89e-0016-4ac6-b9ae-9f841792abce",
      "m1": "ز دینار گنجی ز بهر نثار",
      "m2": "فراز آمد از هر سوی سی هزار",
      "verse_number": 4
    },
    {
      "id": "2c18ad97-4a92-4b81-aa6e-6366c514e14b",
      "m1": "همه مهتران نزد شاه آمدند",
      "m2": "برهنه سر و بیکلاه آمدند",
      "verse_number": 5
    },
    {
      "id": "c4df4b80-ed54-4d07-b64b-1734245c0697",
      "m1": "چو دینار پیشش فرو ریختند",
      "m2": "بگسترده زر کهن بیختند",
      "verse_number": 6
    },
    {
      "id": "8e4910a6-1268-4394-ba6c-e7ed94fad394",
      "m1": "ببخشود و شاپور و بنواختشان",
      "m2": "به خوبی بر اندازه بنشاختشان",
      "verse_number": 7
    },
    {
      "id": "6844f1a2-4391-4b6c-9d9e-c69f94daf9e5",
      "m1": "برانوش را گفت کز شهر روم",
      "m2": "بیامد بسی مرد بیداد و شوم",
      "verse_number": 8
    },
    {
      "id": "41e4f05d-0c63-4712-9775-c4a39c866e97",
      "m1": "به ایران زمین آنچ بد شارستان",
      "m2": "کنون گشت یکسر همه خارستان",
      "verse_number": 9
    },
    {
      "id": "b4e69b82-74bd-437b-ab80-8f98aeae1911",
      "m1": "عوض خواهم آن را که ویران شدست",
      "m2": "کنام پلنگان و شیران شدست",
      "verse_number": 10
    },
    {
      "id": "19aeeeba-bdef-4541-ab3d-40364c8cfbd7",
      "m1": "برانوش گفتا چه باید بگوی",
      "m2": "چو زنهار دادی مه بر تاب روی",
      "verse_number": 11
    },
    {
      "id": "3af22d1f-0dfc-4336-baf7-a03b1bb40831",
      "m1": "چنین داد پاسخ گرانمایه شاه",
      "m2": "چو خواهی که یکسر ببخشم گناه",
      "verse_number": 12
    },
    {
      "id": "4a4e737c-8c3f-4290-a9a1-528f98da9253",
      "m1": "ز دینار رومی به سالی سه بار",
      "m2": "همی داد باید هزاران هزار",
      "verse_number": 13
    },
    {
      "id": "974d4aa8-92d8-4550-9f6e-e3ab829827a6",
      "m1": "دگر آنک باشد نصیبین مرا",
      "m2": "چو خواهی که کوته شود کین مرا",
      "verse_number": 14
    },
    {
      "id": "2f56ebc9-bfba-45d4-8333-4f91398f64ed",
      "m1": "برانوش گفتا که ایران تراست",
      "m2": "نصیبین و دشت دلیران تراست",
      "verse_number": 15
    },
    {
      "id": "56b72f60-5eed-49d6-a0d1-e364e240b7a3",
      "m1": "پذیرفتم این مایهور باژ و ساو",
      "m2": "که با کین و خشمت نداریم تاو",
      "verse_number": 16
    },
    {
      "id": "a5c0bf1e-772e-43ae-9fa1-5ba0b26caafd",
      "m1": "نوشتند عهدی ز شاپور شاه",
      "m2": "کزان پس نراند ز ایران سپاه",
      "verse_number": 17
    },
    {
      "id": "3084ef47-7002-4ddc-9dc2-4ca356bb3091",
      "m1": "مگر با سزاواری و خرمی",
      "m2": "کجا روم را زو نیاید کمی",
      "verse_number": 18
    },
    {
      "id": "011dda00-5025-4dfd-b977-764ca0c67587",
      "m1": "ازان پس گسی کرد و بنواختشان",
      "m2": "سر از نامداران برافراختشان",
      "verse_number": 19
    },
    {
      "id": "4b60885b-6e6b-446b-a703-4b8fe9513e73",
      "m1": "چو ایشان برفتند لشکر براند",
      "m2": "جهانآفرین را فراوان بخواند",
      "verse_number": 20
    },
    {
      "id": "ad302f92-c3bf-4ff8-9ece-32ae0d335e52",
      "m1": "همی رفت شادان به اصطخر پارس",
      "m2": "که اصطخر بد بر زمین فخر پارس",
      "verse_number": 21
    },
    {
      "id": "9e394f56-c2b0-40f5-833c-423c78af17b9",
      "m1": "چو اندر نصیبین خبر یافتند",
      "m2": "همه جنگ را تیز بشتافتند",
      "verse_number": 22
    },
    {
      "id": "5c51e9c9-4669-4aca-9d12-e70e96c0d58d",
      "m1": "که ما را نباید که شاپور شاه",
      "m2": "نصیبین بگیرد بیارد سپاه",
      "verse_number": 23
    },
    {
      "id": "2ee3fd01-4ceb-455e-9195-70d4cc7ccd91",
      "m1": "که دین مسیحا ندارد درست",
      "m2": "همش کیش زردشت و زند است و است",
      "verse_number": 24
    },
    {
      "id": "69e8d3b4-789f-4b1c-b641-b5b0e1bd4f7b",
      "m1": "چو آید ز ما برنگیرد سخن",
      "m2": "نخواهیم استا و دین کهن",
      "verse_number": 25
    },
    {
      "id": "f02ad64e-0911-4ec7-b6da-be8b4acab3fd",
      "m1": "زبردست شد مردم زیردست",
      "m2": "به کین مرد شهری به زین برنشست",
      "verse_number": 26
    },
    {
      "id": "dc9377a1-1886-4df4-b8d7-e3d7d442d067",
      "m1": "چو آگاهی آمد به شاپور شاه",
      "m2": "که اندر نصیبین ندادند راه",
      "verse_number": 27
    },
    {
      "id": "13f8c3d4-b4cc-43cc-ab5c-af6c4a38fb9d",
      "m1": "ز دین مسیحا برآشفت شاه",
      "m2": "سپاهی فرستاد بیمر به راه",
      "verse_number": 28
    },
    {
      "id": "9617d3cb-645c-405f-8923-c136eb89bbb4",
      "m1": "همی گفت پیغمبری کش جهود",
      "m2": "کشد دین او را نشاید ستود",
      "verse_number": 29
    },
    {
      "id": "d8157b18-07b4-4ee5-8479-272185413757",
      "m1": "برفتند لشکر به کردار گرد",
      "m2": "سواران و شیران روز نبرد",
      "verse_number": 30
    },
    {
      "id": "78de3bff-6e55-4d33-b8bc-6071417ae6f0",
      "m1": "به یک هفته آنجا همی جنگ بود",
      "m2": "دران شهر از جنگ بس تنگ بود",
      "verse_number": 31
    },
    {
      "id": "b15fa434-4504-4c0b-acb6-f2530c791f26",
      "m1": "بکشتند زیشان فراوان سران",
      "m2": "نهادند بر زنده بند گران",
      "verse_number": 32
    },
    {
      "id": "031eadfa-72a9-4439-9487-b6c768319560",
      "m1": "همه خواستند آن زمان زینهار",
      "m2": "نوشتند نامه بر شهریار",
      "verse_number": 33
    },
    {
      "id": "306f8d61-a340-4b57-93bc-5710e1e1cf95",
      "m1": "ببخشیدشان نامبردار شاه",
      "m2": "بفرمود تا بازگردد سپاه",
      "verse_number": 34
    },
    {
      "id": "8a822c64-7d91-4a5d-a9f6-51f5932785a3",
      "m1": "به هر کشوری نامداری گرفت",
      "m2": "همان بر جهان کامگاری گرفت",
      "verse_number": 35
    },
    {
      "id": "4f2b860f-2466-4144-a52f-324ff2ae85a5",
      "m1": "همی خواندندیش پیروز شاه",
      "m2": "همی بود یک چند با تاج و گاه",
      "verse_number": 36
    },
    {
      "id": "5104fb91-256b-4789-bb4f-c2c2e222c3e9",
      "m1": "کنیزک که او را رهانیده بود",
      "m2": "بدان کامگاری رسانیده بود",
      "verse_number": 37
    },
    {
      "id": "f4d1dbc7-b9ed-493e-b794-e249d6ed0005",
      "m1": "دلفروزو فرخپیش نام کرد",
      "m2": "ز خوبان مر او را دلارام کرد",
      "verse_number": 38
    },
    {
      "id": "ade8bb5e-e024-4086-be69-a8756f63a84d",
      "m1": "همان باغبان را بسی خواسته",
      "m2": "بداد و گسی کردش آراسته",
      "verse_number": 39
    },
    {
      "id": "529fdee3-9cf3-4abe-a488-97265b2954f6",
      "m1": "همی بود قیصر به زندان و بند",
      "m2": "به زاری و خواری و زخم کمند",
      "verse_number": 40
    },
    {
      "id": "8907abdc-5624-41e4-95d2-cad31bc75bb5",
      "m1": "به روم اندرون هرچ بودش ز گنج",
      "m2": "فراز آوریده ز هر سو به رنج",
      "verse_number": 41
    },
    {
      "id": "180119e9-1767-400b-be3b-fa4e9dff6c8c",
      "m1": "بیاورد و یکسر به شاپور داد",
      "m2": "همی بود یک چند لب پر ز باد",
      "verse_number": 42
    },
    {
      "id": "daf2a5fc-553d-472d-b63a-307720f2ff0c",
      "m1": "سرانجام در بند و زندان بمرد",
      "m2": "کلاه کیی دیگری را سپرد",
      "verse_number": 43
    },
    {
      "id": "4b586fd5-e140-42c6-825d-a274448a4ec2",
      "m1": "به رومش فرستاد شاپور شاه",
      "m2": "به تابوت وز مشک بر سر کلاه",
      "verse_number": 44
    },
    {
      "id": "f98ac896-e548-40e5-a042-97dc3d203733",
      "m1": "چنین گفت کاینست فرجام ما",
      "m2": "ندانم کجا باشد آرام ما",
      "verse_number": 45
    },
    {
      "id": "9f2f2247-700c-4db1-8ee5-b47f3634edd7",
      "m1": "یکی را همه زفتی و ابلهیست",
      "m2": "یکی با خردمندی و فرهیست",
      "verse_number": 46
    },
    {
      "id": "7f362e03-63a9-42f5-900c-f85e0a28edab",
      "m1": "برین و بران روز هم بگذرد",
      "m2": "خنگ آنک گیتی به بد نسپرد",
      "verse_number": 47
    },
    {
      "id": "91900ef4-2311-41ef-897e-fe29047d9767",
      "m1": "به تخت کیان اندر آورد پای",
      "m2": "همی بود چندی جهان کدخدای",
      "verse_number": 48
    },
    {
      "id": "7a26b8ab-120a-44b6-8142-6bb4945fdf75",
      "m1": "وزان پس بر کشور خوزیان",
      "m2": "فرستاد بسیار سود و زیان",
      "verse_number": 49
    },
    {
      "id": "eec06ac0-4bea-49ea-9dce-55c1bba6e09d",
      "m1": "ز بهر اسیران یکی شهر کرد",
      "m2": "جهان را ازان بوم پر بهر کرد",
      "verse_number": 50
    },
    {
      "id": "1fdd4cfd-ea47-461f-a80a-029fed238659",
      "m1": "کجا خرمآباد بد نام شهر",
      "m2": "وزان بوم خرم کرا بود بهر",
      "verse_number": 51
    },
    {
      "id": "4f568a38-498a-4037-9fb4-70a98c46cce8",
      "m1": "کسی را که از پیش ببرید دست",
      "m2": "بدین مرز بودیش جای نشست",
      "verse_number": 52
    },
    {
      "id": "8abd8501-5082-47a5-a229-71176b2f1e40",
      "m1": "بر و بوم او یکسر او را بدی",
      "m2": "سر سال نو خلعتی بستدی",
      "verse_number": 53
    },
    {
      "id": "451551eb-e40d-4ab3-b4c8-2e14b17c78f3",
      "m1": "یکی شارستان کرد دیگر به شام",
      "m2": "که پیروز شاپور کردش به نام",
      "verse_number": 54
    },
    {
      "id": "c7ebafde-a9b4-4aaf-8386-e11067b6552c",
      "m1": "به اهواز کرد آن سیم شارستان",
      "m2": "بدو اندرون کاخ و بیمارستان",
      "verse_number": 55
    },
    {
      "id": "a6fdf6da-5df3-4956-a7ee-9649c8024561",
      "m1": "کنام اسیرانش کردند نام",
      "m2": "اسیر اندرو یافتی خواب و کام",
      "verse_number": 56
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 56
  }
}