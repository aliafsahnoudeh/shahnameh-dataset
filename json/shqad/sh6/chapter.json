{
  "id": "cd11315c-9d98-45b7-ba12-83a62889760c",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "bd2cec9d-130b-4076-9de0-dd5d0fe8e1bf",
      "m1": "فرامرز چون سوک رستم بداشت",
      "m2": "سپه را همه سوی هامون گذاشت",
      "verse_number": 1
    },
    {
      "id": "44f2b6e7-fee6-45ae-b365-598bf5efbdeb",
      "m1": "در خانهٔ پیلتن باز کرد",
      "m2": "سپه را ز گنج پدر ساز کرد",
      "verse_number": 2
    },
    {
      "id": "2e1a0cf3-5b10-409a-9918-87ae5d6e63f4",
      "m1": "سحرگه خروش آمد از کرنای",
      "m2": "هم از کوس و رویین و هندی درای",
      "verse_number": 3
    },
    {
      "id": "64ec8c03-b0a2-4386-8f3d-16fdb10d9ad7",
      "m1": "سپاهی ز زابل به کابل کشید",
      "m2": "که خورشید گشت از جهان ناپدید",
      "verse_number": 4
    },
    {
      "id": "3d4b6b9e-fa97-4ec2-9425-738e7614a74c",
      "m1": "چو آگاه شد شاه کابلستان",
      "m2": "ازان نامداران زابلستان",
      "verse_number": 5
    },
    {
      "id": "7f760bc3-383e-49b8-9c1f-eb548d0deeef",
      "m1": "سپاه پراگنده را گرد کرد",
      "m2": "زمین آهنین شد هوا لاژورد",
      "verse_number": 6
    },
    {
      "id": "d1613ce7-7d23-4830-ba72-c0412db2181b",
      "m1": "پذیرهٔ فرامرز شد با سپاه",
      "m2": "بشد روشنایی ز خورشید و ماه",
      "verse_number": 7
    },
    {
      "id": "76c86a9a-80fa-450d-8387-bedf27f8a0f4",
      "m1": "سپه را چو روی اندر آمد به روی",
      "m2": "جهان شد پرآواز پرخاشجوی",
      "verse_number": 8
    },
    {
      "id": "58a56bc3-24eb-4146-bd73-5873c0714f34",
      "m1": "ز انبوه پیلان و گرد سپاه",
      "m2": "به بیشه درون شیر گم گرد راه",
      "verse_number": 9
    },
    {
      "id": "8c2d90d9-c145-4207-9ce9-9364538f0f8e",
      "m1": "برآمد یکی باد و گردی کبود",
      "m2": "زمین ز آسمان هیچ پیدا نبود",
      "verse_number": 10
    },
    {
      "id": "93c95a6c-3d6b-49e0-abf1-8cf7c2581ebf",
      "m1": "بیامد فرامرز پیش سپاه",
      "m2": "دو دیده نبرداشت از روی شاه",
      "verse_number": 11
    },
    {
      "id": "9b4de230-0459-4954-abd8-3fb1ffc7eb44",
      "m1": "چو برخاست آواز کوس از دو روی",
      "m2": "بیآرام شد مردم جنگجوی",
      "verse_number": 12
    },
    {
      "id": "61dae447-aec2-4c91-805c-1ccdc6b608af",
      "m1": "فرامرز با خوارمایه سپاه",
      "m2": "بزد خویشتن را بر آن قلبگاه",
      "verse_number": 13
    },
    {
      "id": "034f3bad-b03d-4c0a-b6ea-d1d13212979e",
      "m1": "ز گرد سواران هوا تار شد",
      "m2": "سپهدار کابل گرفتار شد",
      "verse_number": 14
    },
    {
      "id": "5f79e191-2a23-4a4d-8022-bc47d9939475",
      "m1": "پراگنده شد آن سپاه بزرگ",
      "m2": "دلیران زابل به کردار گرگ",
      "verse_number": 15
    },
    {
      "id": "d22c7c56-749a-42b8-ab92-2fe39a96840e",
      "m1": "ز هر سو بریشان کمین ساختند",
      "m2": "پس لشکراندر همی تاختند",
      "verse_number": 16
    },
    {
      "id": "16e6f1b5-2bde-4e04-bfd6-dc8f9ea86769",
      "m1": "بکشتند چندان ز گردان هند",
      "m2": "هم از بر منش نامداران سند",
      "verse_number": 17
    },
    {
      "id": "6108e903-26e9-4924-b9ef-6891a02d5e67",
      "m1": "که گل شد همی خاک آوردگاه",
      "m2": "پراگنده شد هند و سندی سپاه",
      "verse_number": 18
    },
    {
      "id": "67b4b0a1-e672-4a2b-958b-107f7af13b7e",
      "m1": "دل از مرز وز خانه برداشتند",
      "m2": "زن و کودک خرد بگذاشتند",
      "verse_number": 19
    },
    {
      "id": "73b7fe4e-82d7-47f4-84e9-d2236aec4689",
      "m1": "تن مهتر کابلی پر ز خون",
      "m2": "فگنده به صندوق پیل اندرون",
      "verse_number": 20
    },
    {
      "id": "e94657e6-d549-4552-925d-9f369ab5aa18",
      "m1": "بیاورد لشکر به نخچیرگاه",
      "m2": "به جایی کجا کنده بودند چاه",
      "verse_number": 21
    },
    {
      "id": "a4da4284-6558-49ca-b2dc-d5583fe15795",
      "m1": "همی برد بدخواه را بسته دست",
      "m2": "ز خویشان او نیز چل بتپرست",
      "verse_number": 22
    },
    {
      "id": "6a315bbe-2a01-4b6c-b84c-8d82e48687f2",
      "m1": "ز پشت سپهبد زهی برکشید",
      "m2": "چنان کاستخوان و پی آمد پدید",
      "verse_number": 23
    },
    {
      "id": "615fb338-ca4e-4685-bdec-ceceda5d4146",
      "m1": "ز چاه اندر آویختنش سرنگون",
      "m2": "تنش پر ز خاک و دهن پر ز خون",
      "verse_number": 24
    },
    {
      "id": "0dc38e66-28ef-415a-9d28-8fdcfee89b5c",
      "m1": "چهل خویش او را بر آتش نهاد",
      "m2": "ازان جایگه رفت سوی شغاد",
      "verse_number": 25
    },
    {
      "id": "fb7e7df6-0d82-4e7e-bbd3-a7c700158237",
      "m1": "به کردار کوه آتشی برفروخت",
      "m2": "شغاد و چنار و زمین را بسوخت",
      "verse_number": 26
    },
    {
      "id": "0c63f46e-78b8-4550-bd40-a6b7ab13059d",
      "m1": "چو لشکر سوی زابلستان کشید",
      "m2": "همه خاک را سوی دستان کشید",
      "verse_number": 27
    },
    {
      "id": "ae1c5812-d3a1-4409-8ea9-b00f8b16086b",
      "m1": "چو روز جفاپیشه کوتاه کرد",
      "m2": "به کابل یکی مهتری شاه کرد",
      "verse_number": 28
    },
    {
      "id": "92c68497-fa76-40f6-998d-1866e83526bb",
      "m1": "ازان دودمان کس به کابل نماند",
      "m2": "که منشور تیغ ورا برنخواند",
      "verse_number": 29
    },
    {
      "id": "dd681e35-bfb6-45ca-809a-67e785ecf950",
      "m1": "ز کابل بیامد پر از داغ و دود",
      "m2": "شده روز روشن بروبر کبود",
      "verse_number": 30
    },
    {
      "id": "5eb55bed-335e-463e-a38f-07f3c64d295b",
      "m1": "خروشان همه زابلستان و بست",
      "m2": "یکی را نبد جامه بر تن درست",
      "verse_number": 31
    },
    {
      "id": "894210ef-8ce2-44a9-aee1-58dc1c16a72a",
      "m1": "به پیش فرامرز باز آمدند",
      "m2": "دریده بر و با گداز آمدند",
      "verse_number": 32
    },
    {
      "id": "e785b522-35f5-400f-a096-4f311f731e27",
      "m1": "به یک سال در سیستان سوک بود",
      "m2": "همه جامههاشان سیاه و کبود",
      "verse_number": 33
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 33
  }
}