{
  "id": "f8cf73bf-917b-448b-a8c6-2e6377d50380",
  "title": "بخش ۵",
  "verses": [
    {
      "id": "52882879-8c95-468f-b9f6-1d7c3d1b7161",
      "m1": "ازان نامداران سواری بجست",
      "m2": "گهی شد پیاده گهی برنشست",
      "verse_number": 1
    },
    {
      "id": "80ab0e47-21e6-4c47-8f29-40b925366cf9",
      "m1": "چو آمد سوی زابلستان بگفت",
      "m2": "که پیل ژیان گشت با خاک جفت",
      "verse_number": 2
    },
    {
      "id": "a3690cb8-6e57-451e-ad76-0787af407a79",
      "m1": "زواره همان و سپاهش همان",
      "m2": "سواری نجست از بد بدگمان",
      "verse_number": 3
    },
    {
      "id": "371304f7-564a-47a8-90cc-5e640523b9ad",
      "m1": "خروشی برآمد ز زابلستان",
      "m2": "ز بدخواه وز شاه کابلستان",
      "verse_number": 4
    },
    {
      "id": "843a3204-0697-4867-9c97-63bb2e3b2c2e",
      "m1": "همی ریخت زال از بر یال خاک",
      "m2": "همیکرد روی و بر خویش چاک",
      "verse_number": 5
    },
    {
      "id": "54d78e5e-2967-4383-b25c-735dd59d810d",
      "m1": "همیگفت زار ای گو پیلتن",
      "m2": "نخواهد که پوشد تنم جز کفن",
      "verse_number": 6
    },
    {
      "id": "638a1d85-945d-4bbf-8502-a6902e73c3ca",
      "m1": "گو سرفراز اژدهای دلیر",
      "m2": "زواره که بد نامبردار شیر",
      "verse_number": 7
    },
    {
      "id": "6dce00ba-0f7e-4a93-8ab3-6fb333b50080",
      "m1": "شغاد آن به نفرین شوریدهبخت",
      "m2": "بکند از بن این خسروانی درخت",
      "verse_number": 8
    },
    {
      "id": "b6323e56-92aa-4a1b-a0ea-66bf91d65a91",
      "m1": "که داند که با پیل روباه شوم",
      "m2": "همی کین سگالد بران مرز و بوم",
      "verse_number": 9
    },
    {
      "id": "a4e99fa0-8a1f-486b-b694-20f8c4191218",
      "m1": "که دارد به یاد این چنین روزگار",
      "m2": "که داند شنیدن ز آموزگار",
      "verse_number": 10
    },
    {
      "id": "52760515-c8ab-4eb8-8219-fbfdfbd5e639",
      "m1": "که چون رستمی پیش بینم به خاک",
      "m2": "به گفتار روباه گردد هلاک",
      "verse_number": 11
    },
    {
      "id": "82c8c5c2-28e9-4545-be40-daba5bea8ac9",
      "m1": "چرا پیش ایشان نمردم به زار",
      "m2": "چرا ماندم اندر جهان یادگار",
      "verse_number": 12
    },
    {
      "id": "bfd58853-222b-4b5a-8407-867b80d47146",
      "m1": "چرا بایدم زندگانی و گاه",
      "m2": "چرا بایدم خواب و آرامگاه",
      "verse_number": 13
    },
    {
      "id": "82dc3daa-c0cf-4e57-b597-40efc6d0b503",
      "m1": "پسانگه بسی مویه آغاز کرد",
      "m2": "چو بر پور پهلو همی ساز کرد",
      "verse_number": 14
    },
    {
      "id": "80f384bb-1643-46c2-a8ef-bc21c6e47271",
      "m1": "گوا شیرگیرا یلا مهترا",
      "m2": "دلاور جهاندیده کنداورا",
      "verse_number": 15
    },
    {
      "id": "ec335f96-f47f-4772-9bb4-85e17596f543",
      "m1": "کجات آن دلیری و مردانگی",
      "m2": "کجات آن بزرگی و فرزانگی",
      "verse_number": 16
    },
    {
      "id": "edc5943b-152a-4100-8b74-8d0fe99005a1",
      "m1": "کجات آن دل و رای و روشنروان",
      "m2": "کجات آن بر و برز و یال گران",
      "verse_number": 17
    },
    {
      "id": "85fb982a-58d2-44c3-918c-79f26c11dc4f",
      "m1": "کجات آن بزرگ اژدهافش درفش",
      "m2": "کجا تیر و گوپال و تیغ بنفش",
      "verse_number": 18
    },
    {
      "id": "f257e9c7-8dba-4e48-8cdb-298d4dda4fed",
      "m1": "نماندی به گیتی و رفتی به خاک",
      "m2": "که بادا سر دشمنت در مغاک",
      "verse_number": 19
    },
    {
      "id": "9b0c216e-db8d-48ca-84b6-c0ac352cb128",
      "m1": "پس انگه فرامرز را با سپاه",
      "m2": "فرستاد تا رزم جوید ز شاه",
      "verse_number": 20
    },
    {
      "id": "53356731-6249-465b-b2a9-88c9bc83b5da",
      "m1": "تن کشته از چاه باز آورد",
      "m2": "جهان را به زاری نیاز آورد",
      "verse_number": 21
    },
    {
      "id": "326ec64e-6342-414c-9efa-0be3260f3009",
      "m1": "فرامرز چون پیش کابل رسید",
      "m2": "به شهر اندرون نامداری ندید",
      "verse_number": 22
    },
    {
      "id": "43b233a1-bf71-497a-b5c5-e2204cc7240b",
      "m1": "گریزان همه شهر و گریان شده",
      "m2": "ز سوک جهانگیر بریان شده",
      "verse_number": 23
    },
    {
      "id": "d9feafc4-7078-487e-ba8e-01d3d994d879",
      "m1": "بیامد بران دشت نخچیرگاه",
      "m2": "به جایی کجا کنده بودند چاه",
      "verse_number": 24
    },
    {
      "id": "47c43072-28fe-4eeb-9094-bb4f39245913",
      "m1": "چو روی پدر دید پور دلیر",
      "m2": "خروشی برآورد بر سان شیر",
      "verse_number": 25
    },
    {
      "id": "8e085fb8-3b3c-45f0-a9d6-8173285a6984",
      "m1": "بدان گونه بر خاک تن پر ز خون",
      "m2": "به روی زمین بر فگنده نگون",
      "verse_number": 26
    },
    {
      "id": "5e8729cf-b5b6-4926-96ad-8685ccfddd38",
      "m1": "همی گفت کای پهلوان بلند",
      "m2": "به رویت که آورد زین سان گزند",
      "verse_number": 27
    },
    {
      "id": "2ec3cfbe-b88c-40c8-86c7-7fcfb3db032a",
      "m1": "که نفرین بران مرد بیباک باد",
      "m2": "به جای کله بر سرش خاک باد",
      "verse_number": 28
    },
    {
      "id": "78111869-b915-4886-a1cd-e2602501e75d",
      "m1": "به یزدان و جان تو ای نامدار",
      "m2": "به خاک نریمان و سام سوار",
      "verse_number": 29
    },
    {
      "id": "bab4cad8-b167-4ca0-a46d-01fc0334cd65",
      "m1": "که هرگز نبیند تنم جز زره",
      "m2": "بیوسنده و برفگنده گرد",
      "verse_number": 30
    },
    {
      "id": "2fb40cc5-49da-4a70-9387-0ba75906cc2f",
      "m1": "بدان تا که کین گو پیلتن",
      "m2": "بخواهم ازان بیوفا انجمن",
      "verse_number": 31
    },
    {
      "id": "5ff11de7-2d58-403b-b05d-2782fa8a9efe",
      "m1": "همانکس که با او بدین کین میان",
      "m2": "ببستند و آمد به ما بر زبان",
      "verse_number": 32
    },
    {
      "id": "f886b7e9-0991-4283-8a69-f53af7fa3441",
      "m1": "نمانم ز ایشان یکی را به جای",
      "m2": "همانکس که بود اندرین رهنمای",
      "verse_number": 33
    },
    {
      "id": "1852fe62-7cd3-4f5b-b8e1-d0eabe31b3c0",
      "m1": "بفرمود تا تختهای گران",
      "m2": "بیارند از هر سوی در گران",
      "verse_number": 34
    },
    {
      "id": "74ac55f3-8453-4dfe-8ff4-e96c192d11b8",
      "m1": "ببردند بسیار با هوی و تخت",
      "m2": "نهادند بر تخت زیبا درخت",
      "verse_number": 35
    },
    {
      "id": "60d89371-e5c3-4023-8488-e75751f77b2d",
      "m1": "گشاد آن میان بستن پهلوی",
      "m2": "برآهیخت زو جامهٔ خسروی",
      "verse_number": 36
    },
    {
      "id": "9cdadb5c-96ca-4662-84bf-8edc4a42aba9",
      "m1": "نخستین بشستندش از خون گرم",
      "m2": "بر و یال و ریش و تنش نرمنرم",
      "verse_number": 37
    },
    {
      "id": "6bead715-0994-4e2b-8b61-cda4ae9afb5e",
      "m1": "همی عنبر و زعفران سوختند",
      "m2": "همه خستگیهاش بردوختند",
      "verse_number": 38
    },
    {
      "id": "0def82c7-900d-4a76-a649-8aa1c45cd82e",
      "m1": "همی ریخت بر تارکش بر گلاب",
      "m2": "بگسترد بر تنش کافور ناب",
      "verse_number": 39
    },
    {
      "id": "f10a55cc-023c-467a-9de7-bdd820002acd",
      "m1": "به دیبا تنش را بیاراستند",
      "m2": "ازان پس گل و مشک و می خواستند",
      "verse_number": 40
    },
    {
      "id": "f81f9a0f-494d-43b9-9f12-8d7773ddd0e7",
      "m1": "کفندوز بر وی ببارید خون",
      "m2": "به شانه زد آن ریش کافورگون",
      "verse_number": 41
    },
    {
      "id": "814f28ce-857f-4f3c-b4b2-3b50f2ce15ec",
      "m1": "نبد جا تنش را همی بر دو تخت",
      "m2": "تنی بود با سایه گستر درخت",
      "verse_number": 42
    },
    {
      "id": "64140749-783c-4d0b-be19-4e9fd0783beb",
      "m1": "یکی نغز تابوت کردند ساج",
      "m2": "برو میخ زرین و پیکر ز عاج",
      "verse_number": 43
    },
    {
      "id": "f21d48d6-2f1f-4fcd-9a17-f120ce915fa5",
      "m1": "همه درزهایش گرفته به قیر",
      "m2": "برآلوده بر قیر مشک و عبیر",
      "verse_number": 44
    },
    {
      "id": "48991f97-b6ba-46a6-abda-4fdd5c8101ae",
      "m1": "ز جاهی برادرش را برکشید",
      "m2": "همی دوخت جایی کجا خسته دید",
      "verse_number": 45
    },
    {
      "id": "ca24e936-09cf-4852-a1fd-c2019eef999e",
      "m1": "زبر مشک و کافور و زیرش گلاب",
      "m2": "ازان سان همی ریخت بر جای خواب",
      "verse_number": 46
    },
    {
      "id": "4ac61683-ba42-4de2-9b6a-32154a9ab91e",
      "m1": "ازان پس تن رخش را برکشید",
      "m2": "بشست و برو جامهها گسترید",
      "verse_number": 47
    },
    {
      "id": "7159a708-baf1-497d-a8e0-1247ca684470",
      "m1": "بشستند و کردند دیبا کفن",
      "m2": "بجستند جایی یکی نارون",
      "verse_number": 48
    },
    {
      "id": "42de2940-4e48-4e78-b5ce-666536d49b00",
      "m1": "برفتند بیداردل درگران",
      "m2": "بریدند ازو تختهای گران",
      "verse_number": 49
    },
    {
      "id": "0edce746-e3be-4b75-a8f3-d73781427c99",
      "m1": "دو روز اندران کار شد روزگار",
      "m2": "تن رخش بر پیل کردند بار",
      "verse_number": 50
    },
    {
      "id": "6a9276c1-a832-40b8-b8bc-c0b032aec248",
      "m1": "ز کابلستان تا به زابلستان",
      "m2": "زمین شد به کردار غلغلستان",
      "verse_number": 51
    },
    {
      "id": "0da42dbb-e8c7-4ea3-8890-c76f1c68068d",
      "m1": "زن و مرد بد ایستاده به پای",
      "m2": "تنی را نبد بر زمین نیز جای",
      "verse_number": 52
    },
    {
      "id": "9e55c5b5-a1d6-4a47-8443-fe28adfad7e2",
      "m1": "دو تابوت بر دست بگذاشتند",
      "m2": "ز انبوه چون باد پنداشتند",
      "verse_number": 53
    },
    {
      "id": "aa698861-395e-4b80-94d8-72cd659a4e10",
      "m1": "بده روز و ده شب به زابل رسید",
      "m2": "کسش بر زمین بر نهاده ندید",
      "verse_number": 54
    },
    {
      "id": "3078c035-3618-4fcd-a48b-a8ae42e31b0d",
      "m1": "زمانه شد از درد او با خروش",
      "m2": "تو گفتی که هامون برآمد به جوش",
      "verse_number": 55
    },
    {
      "id": "d0560e0c-d124-425f-b5db-815c578c10d4",
      "m1": "کسی نیز نشنید آواز کس",
      "m2": "همه بومها مویه کردند و بس",
      "verse_number": 56
    },
    {
      "id": "671d7b69-697f-4bf9-825d-1c37a8b5de38",
      "m1": "به باغ اندرون دخمهای ساختند",
      "m2": "سرش را به ابر اندر افراختند",
      "verse_number": 57
    },
    {
      "id": "96881110-4b63-4bbc-9c98-06e69906669c",
      "m1": "برابر نهادند زرین دو تخت",
      "m2": "بران خوابنیده گو نیکبخت",
      "verse_number": 58
    },
    {
      "id": "5831f4a5-9ce2-4be6-ada4-b3af7599d66c",
      "m1": "هرانکس که بود از پرستندگان",
      "m2": "از آزاد وز پاکدل بندگان",
      "verse_number": 59
    },
    {
      "id": "99590eef-7755-495d-b775-fd1251f32a88",
      "m1": "همی مشک باگل برآمیختند",
      "m2": "به پای گو پیلتن ریختند",
      "verse_number": 60
    },
    {
      "id": "47bace36-1917-4c37-bd36-26f96e35c504",
      "m1": "همی هرکسی گفت کای نامدار",
      "m2": "چرا خواستی مشک و عنبر نثار",
      "verse_number": 61
    },
    {
      "id": "e5a2b51a-a935-4d16-ba28-c08735eb86ea",
      "m1": "نخواهی همی پادشاهی و بزم",
      "m2": "نپوشی همی نیز خفتان رزم",
      "verse_number": 62
    },
    {
      "id": "c4a869c8-aaf8-4fae-a2c8-7d11d2a52933",
      "m1": "نبخشی همی گنج و دینار نیز",
      "m2": "همانا که شد پیش تو خوار چیز",
      "verse_number": 63
    },
    {
      "id": "2f5b153b-2c73-4786-97c0-5fea7a6ca0f0",
      "m1": "کنون شاد باشی به خرم بهشت",
      "m2": "که یزدانت از داد و مردی سرشت",
      "verse_number": 64
    },
    {
      "id": "01b83518-a545-43a6-a4c0-b1fa03e83629",
      "m1": "در دخمه بستند و گشتند باز",
      "m2": "شد آن نامور شیر گردنفراز",
      "verse_number": 65
    },
    {
      "id": "b0afe02d-056b-4e57-a29a-95161c3897e4",
      "m1": "چه جویی همی زین سرای سپنج",
      "m2": "کز آغاز رنجست و فرجام رنج",
      "verse_number": 66
    },
    {
      "id": "54afa75c-6ed3-4207-8c54-819cb9adf0ff",
      "m1": "بریزی به خاک از همه ز آهنی",
      "m2": "اگر دینپرستی ور آهرمنی",
      "verse_number": 67
    },
    {
      "id": "9c8bf72c-08f1-4112-82b6-a84d14ac9e47",
      "m1": "تو تا زندهای سوی نیکی گرای",
      "m2": "مگر کام یابی به دیگر سرای",
      "verse_number": 68
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 68
  }
}