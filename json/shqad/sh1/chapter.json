{
  "id": "7719b07e-6d5c-4539-b279-7f5b2707925c",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "3895a2b8-5ebc-4d51-b3f5-71235713e805",
      "m1": "یکی پیر بد نامش آزاد سرو",
      "m2": "که با احمد سهل بودی به مرو",
      "verse_number": 1
    },
    {
      "id": "d3a2f1b8-dc96-4d7d-9a7c-9730839315e8",
      "m1": "دلی پر ز دانش سری پر سخن",
      "m2": "زبان پر ز گفتارهای کهن",
      "verse_number": 2
    },
    {
      "id": "11921748-36ac-4964-9470-d11738ab421d",
      "m1": "کجا نامهٔ خسروان داشتی",
      "m2": "تن و پیکر پهلوان داشتی",
      "verse_number": 3
    },
    {
      "id": "8c70a78e-cf85-4d6f-8f33-e766ec0e22bd",
      "m1": "به سام نریمان کشیدی نژاد",
      "m2": "بسی داشتی رزم رستم به یاد",
      "verse_number": 4
    },
    {
      "id": "2f47217b-51e0-42c4-8f17-8e03eccc22ab",
      "m1": "بگویم کنون آنچ ازو یافتم",
      "m2": "سخن را یک اندر دگر بافتم",
      "verse_number": 5
    },
    {
      "id": "4f03fc69-83fc-4492-a96f-41573f3106b9",
      "m1": "اگر مانم اندر سپنجی سرای",
      "m2": "روان و خرد باشدم رهنمای",
      "verse_number": 6
    },
    {
      "id": "94f9bfb2-b87b-4263-a7af-ee4b6b911c48",
      "m1": "سرآرم من این نامهٔ باستان",
      "m2": "به گیتی بمانم یکی داستان",
      "verse_number": 7
    },
    {
      "id": "fb97584e-bf90-4380-9cd4-2a59b6ccf869",
      "m1": "به نام جهاندار محمود شاه",
      "m2": "ابوالقاسم آن فر دیهیم و گاه",
      "verse_number": 8
    },
    {
      "id": "e66e36e8-f0bc-4458-9451-0ed7fdf01027",
      "m1": "خداوند ایران و نیران و هند",
      "m2": "ز فرش جهان شد چو رومی پرند",
      "verse_number": 9
    },
    {
      "id": "b3044250-3a6d-4896-8c33-c7d09fd819ef",
      "m1": "به بخشش همی گنج بپراگند",
      "m2": "به دانایی از گنج نام آگند",
      "verse_number": 10
    },
    {
      "id": "e290234c-c373-4893-9d0f-0c9663066f35",
      "m1": "بزرگست و چون سالیان بگذرد",
      "m2": "ازو گوید آنکس که دارد خرد",
      "verse_number": 11
    },
    {
      "id": "ad51675b-c665-4452-8d1c-c9d13a5606b7",
      "m1": "ز رزم و ز بزم و ز بخش و شکار",
      "m2": "ز دادش جهان شد چو خرم بهار",
      "verse_number": 12
    },
    {
      "id": "2f897b9e-cfd0-43d8-8ee1-42d93b4cd1aa",
      "m1": "خنک آنک بیند کلاه ورا",
      "m2": "همان بارگاه و سپاه ورا",
      "verse_number": 13
    },
    {
      "id": "b6accf50-a2d0-449c-837c-9d6e300086de",
      "m1": "دو گوش و دو پای من آهو گرفت",
      "m2": "تهی دستی و سال نیرو گرفت",
      "verse_number": 14
    },
    {
      "id": "a4e23f2a-b48e-44c7-8eea-642ec04c82e2",
      "m1": "ببستم برین گونه بدخواه بخت",
      "m2": "بنالم ز بخت بد و سال سخت",
      "verse_number": 15
    },
    {
      "id": "c048ee8b-90de-45d8-a088-6e44f77cb7dd",
      "m1": "شب و روز خوانم همی آفرین",
      "m2": "بران دادگر شهریار زمین",
      "verse_number": 16
    },
    {
      "id": "1002e7d5-edff-4701-8d0d-7a4590472d3a",
      "m1": "همه شهر با من بدین یاورند",
      "m2": "جز آنکس که بددین و بدگوهرند",
      "verse_number": 17
    },
    {
      "id": "0841358b-aac7-49d9-bcfc-d1c6472b30b2",
      "m1": "که تا او به تخت کیی برنشست",
      "m2": "در کین و دست بدی را ببست",
      "verse_number": 18
    },
    {
      "id": "6addc54d-9d86-46a0-82d5-248efbb23135",
      "m1": "بپیچاند آن را که بیشی کند",
      "m2": "وگر چند بیشی ز پیشی کند",
      "verse_number": 19
    },
    {
      "id": "840dcbd2-3b6d-4b67-a4a8-6a2f822c8c7f",
      "m1": "ببخشاید آن را که دارد خرد",
      "m2": "ز اندازهٔ روز برنگذرد",
      "verse_number": 20
    },
    {
      "id": "6a8ec884-a696-4806-8dbe-7fa2a0f7bcd0",
      "m1": "ازو یادگاری کنم در جهان",
      "m2": "که تا هست مردم نگردد نهان",
      "verse_number": 21
    },
    {
      "id": "975c1ba4-3a8f-41b2-a091-581688a3e46b",
      "m1": "بدین نامهٔ شهریاران پیش",
      "m2": "بزرگان و جنگی سواران پیش",
      "verse_number": 22
    },
    {
      "id": "d9f39b91-17e2-4ae2-b7c1-ddfb09541adc",
      "m1": "همه رزم و بزمست و رای و سخن",
      "m2": "گذشته بسی روزگار کهن",
      "verse_number": 23
    },
    {
      "id": "bd3a12b5-ba87-4f85-add6-396b787cf664",
      "m1": "همان دانش و دین و پرهیز و رای",
      "m2": "همان رهنمونی به دیگر سرای",
      "verse_number": 24
    },
    {
      "id": "3582518b-4699-4518-8b27-a0db1f408569",
      "m1": "ز چیزی کزیشان پسند آیدش",
      "m2": "همین روز را سودمند آیدش",
      "verse_number": 25
    },
    {
      "id": "4c8f00d9-8f43-43cc-a7c6-8462d90308cb",
      "m1": "کزان برتران یادگارش بود",
      "m2": "همان مونس روزگارش بود",
      "verse_number": 26
    },
    {
      "id": "d91482ba-d943-4661-bfa2-5d7f40ba3e66",
      "m1": "همی چشم دارم بدین روزگار",
      "m2": "که دینار یابم من از شهریار",
      "verse_number": 27
    },
    {
      "id": "c473c967-160b-49bc-961e-75ecd4dceba7",
      "m1": "دگر چشم دارم به دیگر سرای",
      "m2": "که آمرزش آید مرا از خدای",
      "verse_number": 28
    },
    {
      "id": "680b07d8-548f-41cf-b0ce-6aa120d298cb",
      "m1": "که از من پس از مرگ ماند نشان",
      "m2": "ز گنج شهنشاه گردنکشان",
      "verse_number": 29
    },
    {
      "id": "d6ccd7d4-af0a-4e19-a9b6-a9eac632e4ab",
      "m1": "کنون بازگردم به گفتار سرو",
      "m2": "فروزندهٔ سهل ماهان به مرو",
      "verse_number": 30
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 30
  }
}