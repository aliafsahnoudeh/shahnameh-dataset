{
  "id": "f8094566-d3a8-4e75-b61d-54c89ef07d92",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "60dbc672-18b7-45fb-be83-b1780c046eac",
      "m1": "چو با خستگی چشمها برگشاد",
      "m2": "بدید آن بداندیش روی شغاد",
      "verse_number": 1
    },
    {
      "id": "737429f8-3c05-4f3e-b35c-204f65321f29",
      "m1": "بدانست کان چاره و راه اوست",
      "m2": "شغاد فریبنده بدخواه اوست",
      "verse_number": 2
    },
    {
      "id": "2336ace5-acfb-4337-8faa-6346548a7bec",
      "m1": "بدو گفت کای مرد بدبخت و شوم",
      "m2": "ز کار تو ویران شد آباد بوم",
      "verse_number": 3
    },
    {
      "id": "d203b560-0071-4308-885b-a80e952e1339",
      "m1": "پشیمانی آید ترا زین سخن",
      "m2": "بپیچی ازین بد نگردی کهن",
      "verse_number": 4
    },
    {
      "id": "b488fb89-efc6-4267-9261-b3eb22f8aecc",
      "m1": "برو با فرامرز و یکتاه باش",
      "m2": "به جان و دل او را نکوخواه باش",
      "verse_number": 5
    },
    {
      "id": "5e12870f-37a7-4661-bae1-26f33abc19f5",
      "m1": "چنین پاسخ آورد ناکس شغاد",
      "m2": "که گردون گردان ترا داد داد",
      "verse_number": 6
    },
    {
      "id": "f70807cb-ebf5-4851-a7ad-a952c351ec1b",
      "m1": "تو چندین چه نازی به خون ریختن",
      "m2": "به ایران به تاراج و آویختن",
      "verse_number": 7
    },
    {
      "id": "a6e9dee9-315b-43b0-be95-e5e2e8c6d928",
      "m1": "ز کابل نخوا هی دگر بار سیم",
      "m2": "نه شاهان شوند از تو زین پس به بیم",
      "verse_number": 8
    },
    {
      "id": "c3a2e8ee-96b8-4cb3-83e8-214d57c8145a",
      "m1": "که آمد که بر تو سرآید زمان",
      "m2": "شوی کشته در دام آهرمنان",
      "verse_number": 9
    },
    {
      "id": "28b18465-85a2-4f17-9034-1d3e880ad881",
      "m1": "همانگه سپهدار کابل ز راه",
      "m2": "به دشت اندر آمد ز نخچیرگاه",
      "verse_number": 10
    },
    {
      "id": "1a927299-b0bf-49e8-963d-f1ee0a258271",
      "m1": "گو پیلتن را چنان خسته دید",
      "m2": "همان خستگیهاش نابسته دید",
      "verse_number": 11
    },
    {
      "id": "90f80a77-90d7-4f4c-bed8-8d3c17b40a72",
      "m1": "بدو گفت کای نامدار سپاه",
      "m2": "چه بودت برین دشت نخچیرگاه",
      "verse_number": 12
    },
    {
      "id": "c9682ce8-4300-4cbd-9eeb-08dc074b3fd4",
      "m1": "شوم زود چندی پزشک آورم",
      "m2": "ز درد تو خونین سرشک آورم",
      "verse_number": 13
    },
    {
      "id": "981eec10-f2ed-47d4-95e4-a6fdee535fb4",
      "m1": "مگر خستگیهات گردد درست",
      "m2": "نباید مرا رخ به خوناب شست",
      "verse_number": 14
    },
    {
      "id": "3f8d394f-dd88-46c1-9a95-3e86fefbd1e3",
      "m1": "تهمتن چنین داد پاسخ بدوی",
      "m2": "که ای مرد بدگوهر چارهجوی",
      "verse_number": 15
    },
    {
      "id": "4b05ceff-2376-4cda-8922-bc62a2738a89",
      "m1": "سر آمد مرا روزگار پزشک",
      "m2": "تو بر من مپالای خونین سرشک",
      "verse_number": 16
    },
    {
      "id": "4be368ec-a320-4612-9569-6a8037bd310e",
      "m1": "فراوان نمانی سرآید زمان",
      "m2": "کسی زنده برنگذرد باسمان",
      "verse_number": 17
    },
    {
      "id": "95684b17-e45e-42f1-9555-90e699e6d7ac",
      "m1": "نه من بیش دارم ز جمشید فر",
      "m2": "که ببرید بیور میانش به ار",
      "verse_number": 18
    },
    {
      "id": "bcd4345a-3b09-408d-8514-a783eab67c5e",
      "m1": "نه از آفریدون وز کیقباد",
      "m2": "بزرگان و شاهان فرخنژاد",
      "verse_number": 19
    },
    {
      "id": "5e69b661-f180-451a-9d2e-ed644a7b54ee",
      "m1": "گلوی سیاوش به خنجر برید",
      "m2": "گروی زره چون زمانش رسید",
      "verse_number": 20
    },
    {
      "id": "c7a189e3-1b48-41ca-af64-055635f3834a",
      "m1": "همه شهریاران ایران بدند",
      "m2": "به رزم اندرون نره شیران بدند",
      "verse_number": 21
    },
    {
      "id": "2d241c82-8151-4f4a-ba9a-cf0ea0be58fd",
      "m1": "برفتند و ما دیرتر ماندیم",
      "m2": "چو شیر ژیان برگذر ماندیم",
      "verse_number": 22
    },
    {
      "id": "291131c5-f6bd-4a8e-9ca1-561135ac458c",
      "m1": "فرامرز پور جهانبین من",
      "m2": "بیاید بخواهد ز تو کین من",
      "verse_number": 23
    },
    {
      "id": "564bd610-ad07-4ad0-8ca8-590227d9ede2",
      "m1": "چنین گفت پس با شغاد پلید",
      "m2": "که اکنون که بر من چنین بد رسید",
      "verse_number": 24
    },
    {
      "id": "5c47567c-2ec7-44ec-a201-b56c28e336e9",
      "m1": "ز ترکش برآور کمان مرا",
      "m2": "به کار آور آن ترجمان مرا",
      "verse_number": 25
    },
    {
      "id": "9d9d118e-d312-4746-a929-139ee7526ec8",
      "m1": "به زه کن بنه پیش من با دو تیر",
      "m2": "نباید که آن شیر نخچیرگیر",
      "verse_number": 26
    },
    {
      "id": "a2814ed8-6c52-455d-88a9-f84256ad097b",
      "m1": "ز دشت اندر آید ز بهر شکار",
      "m2": "من اینجا فتاده چنین نابکار",
      "verse_number": 27
    },
    {
      "id": "4fc25044-6b12-4ad9-912a-ce13e1655e64",
      "m1": "ببیند مرا زو گزند آیدم",
      "m2": "کمانی بود سودمند آیدم",
      "verse_number": 28
    },
    {
      "id": "acee94d5-b832-445c-b58c-fae0a39d2777",
      "m1": "ندرد مگر ژنده شیری تنم",
      "m2": "زمانی بود تن به خاک افگنم",
      "verse_number": 29
    },
    {
      "id": "0b9bd01e-caa1-4fbb-a733-cafe2c5dc03a",
      "m1": "شغاد آمد آن چرخ را برکشید",
      "m2": "به زه کرد و یک بارش اندر کشید",
      "verse_number": 30
    },
    {
      "id": "bc80dee7-5f8a-48f1-a8b2-ca7f3a954c8a",
      "m1": "بخندید و پیش تهمتن نهاد",
      "m2": "به مرگ برادر همی بود شاد",
      "verse_number": 31
    },
    {
      "id": "1aa8eb19-b126-4824-b665-a89573736308",
      "m1": "تهمتن به سختی کمان برگرفت",
      "m2": "بدان خستگی تیرش اندر گرفت",
      "verse_number": 32
    },
    {
      "id": "d706b4ff-4f0c-4992-aace-24822fca03b4",
      "m1": "برادر ز تیرش بترسید سخت",
      "m2": "بیامد سپر کرد تن را درخت",
      "verse_number": 33
    },
    {
      "id": "12e50cc3-e5f7-42bb-925c-2a796160a877",
      "m1": "درختی بدید از برابر چنار",
      "m2": "بروبر گذشته بسی روزگار",
      "verse_number": 34
    },
    {
      "id": "0d3af92b-819d-4587-944c-15352663b735",
      "m1": "میانش تهی بار و برگش بجای",
      "m2": "نهان شد پسش مرد ناپاک رای",
      "verse_number": 35
    },
    {
      "id": "efce2aff-22e9-4e29-ba18-155d0cd94dc4",
      "m1": "چو رستم چنان دید بفراخت دست",
      "m2": "چنان خسته از تیر بگشاد شست",
      "verse_number": 36
    },
    {
      "id": "fa1c329a-ec48-4d19-b2c7-fe0f9ead2ac0",
      "m1": "درخت و برادر بهم بر بدوخت",
      "m2": "به هنگام رفتن دلش برفروخت",
      "verse_number": 37
    },
    {
      "id": "f29c9124-cf67-48bf-b66b-4a4b93ec9d76",
      "m1": "شغاد از پس زخم او آه کرد",
      "m2": "تهمتن برو درد کوتاه کرد",
      "verse_number": 38
    },
    {
      "id": "bbcfad38-0a72-4b7f-8934-7525ef9a51e7",
      "m1": "بدو گفت رستم ز یزدان سپاس",
      "m2": "که بودم همه ساله یزدانشناس",
      "verse_number": 39
    },
    {
      "id": "f18b8c72-ff11-4078-a4b9-53cffa52d541",
      "m1": "ازان پس که جانم رسیده به لب",
      "m2": "برین کین ما بر نبگذشت شب",
      "verse_number": 40
    },
    {
      "id": "a59b988a-9bb9-4b30-800b-5385f20b436f",
      "m1": "مرا زور دادی که از مرگ پیش",
      "m2": "ازین بیوفا خواستم کین خویش",
      "verse_number": 41
    },
    {
      "id": "cfca9976-0c89-497f-8774-376b7dc20321",
      "m1": "بگفت این و جانش برآمد ز تن",
      "m2": "برو زار و گریان شدند انجمن",
      "verse_number": 42
    },
    {
      "id": "35dc6462-31cd-41d4-8697-717d91c19e91",
      "m1": "زواره به چاهی دگر در بمرد",
      "m2": "سواری نماند از بزرگان و خرد",
      "verse_number": 43
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 43
  }
}