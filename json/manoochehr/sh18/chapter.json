{
  "id": "91bd673e-2d80-45bc-8290-f70dbb0daf23",
  "title": "بخش ۱۸",
  "verses": [
    {
      "id": "e4ce5cff-fe38-44f0-9664-cb76ae3b98a6",
      "m1": "پس آگاهی آمد سوی شهریار",
      "m2": "که آمد ز ره زال سام سوار",
      "verse_number": 1
    },
    {
      "id": "75e8b20d-f7a3-4f2a-a7d2-f3d1a511e663",
      "m1": "پذیره شدندش همه سرکشان",
      "m2": "که بودند در پادشاهی نشان",
      "verse_number": 2
    },
    {
      "id": "692d4cbc-7342-42cf-b704-320d50d433e6",
      "m1": "چو آمد به نزدیکی بارگاه",
      "m2": "سبک نزد شاهش گشادند راه",
      "verse_number": 3
    },
    {
      "id": "61cf6f94-b6b9-4f8a-a0ac-07a00ede68d5",
      "m1": "چو نزدیک شاه اندر آمد زمین",
      "m2": "ببوسید و بر شاه کرد آفرین",
      "verse_number": 4
    },
    {
      "id": "47e6a1be-a302-41c4-a0f8-070c6949fe0e",
      "m1": "زمانی همی داشت بر خاک روی",
      "m2": "بدو داد دل شاه آزرمجوی",
      "verse_number": 5
    },
    {
      "id": "d1b746fa-781c-40ec-b383-ac259e1892df",
      "m1": "بفرمود تا رویش از خاک خشک",
      "m2": "ستردند و بر وی پراگند مشک",
      "verse_number": 6
    },
    {
      "id": "019801c6-afed-42a9-97af-b2ed1115776e",
      "m1": "بیامد بر تخت شاه ارجمند",
      "m2": "بپرسید ازو شهریار بلند",
      "verse_number": 7
    },
    {
      "id": "57362a66-96a9-4e41-b01a-d659c58ea4fb",
      "m1": "که چون بودی ای پهلو راد مرد",
      "m2": "بدین راه دشوار با باد و گرد",
      "verse_number": 8
    },
    {
      "id": "75c1137c-6700-4375-9286-ac603f67a6e0",
      "m1": "به فر تو گفتا همه بهتریست",
      "m2": "ابا تو همه رنج رامشگریست",
      "verse_number": 9
    },
    {
      "id": "4aebbb49-1bc7-4e1f-8b4a-8750776e7c24",
      "m1": "ازو بستد آن نامهٔ پهلوان",
      "m2": "بخندید و شد شاد و روشن روان",
      "verse_number": 10
    },
    {
      "id": "6f03cf78-7981-4fcb-98c0-41bd25f2a081",
      "m1": "چو بر خواند پاسخ چنین داد باز",
      "m2": "که رنجی فزودی به دل بر دراز",
      "verse_number": 11
    },
    {
      "id": "80b3bf38-eecd-450b-84db-12a33af5327f",
      "m1": "ولیکن بدین نامهٔ دلپذیر",
      "m2": "که بنوشت با درد دل سام پیر",
      "verse_number": 12
    },
    {
      "id": "dc37d080-aedd-4f1e-bce0-7fd6fe94fb05",
      "m1": "اگر چه مرا هست ازین دل دژم",
      "m2": "برانم که نندیشم از بیش و کم",
      "verse_number": 13
    },
    {
      "id": "217b1a57-0cc8-47da-a0d4-c59ba64810d4",
      "m1": "بسازم برآرم همه کام تو",
      "m2": "گر اینست فرجام آرام تو",
      "verse_number": 14
    },
    {
      "id": "67a953f5-4f6c-42b2-b30d-dafd73666e3b",
      "m1": "تو یک چند اندر به شادی به پای",
      "m2": "که تا من به کارت زنم نیک رای",
      "verse_number": 15
    },
    {
      "id": "cabaa3cd-9ffe-423c-9602-d394b352f9de",
      "m1": "ببردند خوالیگران خوان زر",
      "m2": "شهنشاه بنشست با زال زر",
      "verse_number": 16
    },
    {
      "id": "48b055c8-d43d-40b6-941f-1aae1e356164",
      "m1": "بفرمود تا نامداران همه",
      "m2": "نشستند بر خوان شاه رمه",
      "verse_number": 17
    },
    {
      "id": "215be86f-9843-487f-83bb-211cf9e674f3",
      "m1": "چو از خوان خسرو بپرداختند",
      "m2": "به تخت دگر جای میساختند",
      "verse_number": 18
    },
    {
      "id": "8959e221-b7e8-4de6-8236-88c5402e2b47",
      "m1": "چو می خورده شد نامور پور سام",
      "m2": "نشست از بر اسپ زرین ستام",
      "verse_number": 19
    },
    {
      "id": "42f55885-ad48-423e-bb18-4a10112bd2c5",
      "m1": "برفت و بپیمود بالای شب",
      "m2": "پر اندیشه دل پر ز گفتار لب",
      "verse_number": 20
    },
    {
      "id": "cd2a9564-3051-4c39-a20f-eca91175e467",
      "m1": "بیامد به شبگیر بسته کمر",
      "m2": "به پیش منوچهر پیروزگر",
      "verse_number": 21
    },
    {
      "id": "258fcbdb-c61f-4a51-b83b-4084d4b8d376",
      "m1": "برو آفرین کرد شاه جهان",
      "m2": "چو برگشت بستودش اندر نهان",
      "verse_number": 22
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 22
  }
}