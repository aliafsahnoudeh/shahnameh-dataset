{
  "id": "99ce87a8-094a-4fd7-b9ef-ee8a29f9992e",
  "title": "بخش ۲۲",
  "verses": [
    {
      "id": "9f1d9537-5964-49d5-b0a7-c02dbc338482",
      "m1": "پس آن نامهٔ سام پاسخ نوشت",
      "m2": "شگفتی سخنهای فرخ نوشت",
      "verse_number": 1
    },
    {
      "id": "ca483122-05cf-4530-b9cf-771e45b5eb50",
      "m1": "که ای نامور پهلوان دلیر",
      "m2": "به هر کار پیروز برسان شیر",
      "verse_number": 2
    },
    {
      "id": "68a0e6be-2709-4ecf-b0d4-6dd1769f358b",
      "m1": "نبیند چو تو نیز گردان سپهر",
      "m2": "به رزم و به بزم و به رای و به چهر",
      "verse_number": 3
    },
    {
      "id": "89766dcf-4451-43b3-a605-5b3f059ba3fc",
      "m1": "همان پور فرخنده زال سوار",
      "m2": "کزو ماند اندر جهان یادگار",
      "verse_number": 4
    },
    {
      "id": "40535415-8160-4ad2-b8f2-1c2bcfa46f1d",
      "m1": "رسید و بدانستم از کام او",
      "m2": "همان خواهش و رای و آرام او",
      "verse_number": 5
    },
    {
      "id": "2a021f99-3aae-47da-b077-6109d6c8b675",
      "m1": "برآمد هر آنچ آن ترا کام بود",
      "m2": "همان زال را رای و آرام بود",
      "verse_number": 6
    },
    {
      "id": "678bdd98-3b72-4a17-9411-db3843eb176e",
      "m1": "همه آرزوها سپردم بدوی",
      "m2": "بسی روز فرخ شمردم بدوی",
      "verse_number": 7
    },
    {
      "id": "3475167c-694c-4d2b-9ee7-854f60180687",
      "m1": "ز شیری که باشد شکارش پلنگ",
      "m2": "چه زاید جز از شیر شرزه به جنگ",
      "verse_number": 8
    },
    {
      "id": "9a88d682-a844-46e2-9129-34aa7ea15a79",
      "m1": "گسی کردمش با دلی شادمان",
      "m2": "کزو دور بادا بد بدگمان",
      "verse_number": 9
    },
    {
      "id": "c2c38295-f675-4b22-a723-878ab995b277",
      "m1": "برون رفت با فرخی زال زر",
      "m2": "ز گردان لشکر برآورده سر",
      "verse_number": 10
    },
    {
      "id": "625b3137-c9ec-4139-ba2f-ca1218443e9b",
      "m1": "نوندی برافگند نزدیک سام",
      "m2": "که برگشتم از شاه دل شادکام",
      "verse_number": 11
    },
    {
      "id": "8a3e63c2-c62f-49aa-8562-9634641da0c6",
      "m1": "ابا خلعت خسروانی و تاج",
      "m2": "همان یاره و طوق و هم تخت عاج",
      "verse_number": 12
    },
    {
      "id": "c21976db-55a4-4783-9f03-c814db144e24",
      "m1": "چنان شاد شد زان سخن پهلوان",
      "m2": "که با پیر سر شد به نوی جوان",
      "verse_number": 13
    },
    {
      "id": "a333ae62-bad2-4237-83f9-ae6d5cf7e9b0",
      "m1": "سواری به کابل برافگند زود",
      "m2": "به مهراب گفت آن کجا رفته بود",
      "verse_number": 14
    },
    {
      "id": "79a149a8-d63d-4e69-9183-a76455863ed4",
      "m1": "نوازیدن شهریار جهان",
      "m2": "وزان شادمانی که رفت از مهان",
      "verse_number": 15
    },
    {
      "id": "f6f2bc67-8fda-4da0-b263-6882df045c37",
      "m1": "من اینک چو دستان بر من رسد",
      "m2": "گذاریم هر دو چنان چون سزد",
      "verse_number": 16
    },
    {
      "id": "17822300-655c-4a8d-9d7d-30003442c30a",
      "m1": "چنان شاد شد شاه کابلستان",
      "m2": "ز پیوند خورشید زابلستان",
      "verse_number": 17
    },
    {
      "id": "7e221bf2-3983-495d-9130-079409fa789b",
      "m1": "که گفتی همی جان برافشاندند",
      "m2": "ز هر جای رامشگران خواندند",
      "verse_number": 18
    },
    {
      "id": "71c08b01-1b66-461a-8594-e1d03b02ebdf",
      "m1": "چو مهراب شد شاد و روشن روان",
      "m2": "لبش گشت خندان و دل شادمان",
      "verse_number": 19
    },
    {
      "id": "113d4bf5-a82d-4b7c-9ff8-b06ef02a424f",
      "m1": "گرانمایه سیندخت را پیش خواند",
      "m2": "بسی خوب گفتار با او براند",
      "verse_number": 20
    },
    {
      "id": "ca78ee95-6d77-448d-986f-73f6a7a8eabb",
      "m1": "بدو گفت کای جفت فرخنده رای",
      "m2": "بیفروخت از رایت این تیره جای",
      "verse_number": 21
    },
    {
      "id": "a69c646d-5b8d-41e4-b7b4-81cbfc47001b",
      "m1": "به شاخی زدی دست کاندر زمین",
      "m2": "برو شهریاران کنند آفرین",
      "verse_number": 22
    },
    {
      "id": "9a1a8a0e-8b07-47cf-b028-37be4dbaae66",
      "m1": "چنان هم کجا ساختی از نخست",
      "m2": "بیاید مر این را سرانجام جست",
      "verse_number": 23
    },
    {
      "id": "95c38dca-bf1d-402f-b8d4-d355489db75b",
      "m1": "همه گنج پیش تو آراستست",
      "m2": "اگر تخت عاجست اگر خواستست",
      "verse_number": 24
    },
    {
      "id": "d67f24af-a53c-4b29-8190-4a29b33ba6e4",
      "m1": "چو بشنید سیندخت ازو گشت باز",
      "m2": "بر دختر آمد سراینده راز",
      "verse_number": 25
    },
    {
      "id": "df2d3fec-99c1-4564-bdf6-9639f68e98e6",
      "m1": "همی مژده دادش به دیدار زال",
      "m2": "که دیدی چنان چون بباید همال",
      "verse_number": 26
    },
    {
      "id": "eee1e79d-ec67-49bc-8bef-dc42f06ff6a3",
      "m1": "زن و مرد را از بلندی منش",
      "m2": "سزد گر فرازد سر از سرزنش",
      "verse_number": 27
    },
    {
      "id": "a94bb9cd-866d-4fb5-85bf-d828fed2a6be",
      "m1": "سوی کام دل تیز بشتافتی",
      "m2": "کنون هر چه جستی همه یافتی",
      "verse_number": 28
    },
    {
      "id": "1ad08501-d222-4dd9-8833-f606b0f7bd3c",
      "m1": "بدو گفت رودابه ای شاه زن",
      "m2": "سزای ستایش به هر انجمن",
      "verse_number": 29
    },
    {
      "id": "3ac2b89e-b4b4-48dc-adbf-6c289994af97",
      "m1": "من از خاک پای تو بالین کنم",
      "m2": "به فرمانت آرایش دین کنم",
      "verse_number": 30
    },
    {
      "id": "2bf83303-6cc4-43a6-abfb-5db60ba54146",
      "m1": "ز تو چشم آهرمنان دور باد",
      "m2": "دل و جان تو خانهٔ سور باد",
      "verse_number": 31
    },
    {
      "id": "1dbfb61b-6a33-4279-9fac-f5d8aba423fa",
      "m1": "چو بشنید سیندخت گفتار اوی",
      "m2": "به آرایش کاخ بنهاد روی",
      "verse_number": 32
    },
    {
      "id": "21e0e323-9e5b-45dd-ab21-d10c6d0d04b1",
      "m1": "بیاراست ایوانها چون بهشت",
      "m2": "گلاب و می و مشک و عنبر سرشت",
      "verse_number": 33
    },
    {
      "id": "1cc88774-007d-40b8-918d-a3075e85f87f",
      "m1": "بساطی بیفگند پیکر به زر",
      "m2": "زبر جد برو بافته سر به سر",
      "verse_number": 34
    },
    {
      "id": "a6bb8e41-67e7-472c-b017-0b38aa6442d8",
      "m1": "دگر پیکرش در خوشاب بود",
      "m2": "که هر دانهای قطرهای آب بود",
      "verse_number": 35
    },
    {
      "id": "c277c4ee-7964-4de2-9050-d1584e168746",
      "m1": "یک ایوان همه تخت زرین نهاد",
      "m2": "به آیین و آرایش چین نهاد",
      "verse_number": 36
    },
    {
      "id": "a438427a-098f-4175-a423-06afceccb9e0",
      "m1": "همه پیکرش گوهر آگنده بود",
      "m2": "میان گهر نقشها کنده بود",
      "verse_number": 37
    },
    {
      "id": "cb402247-c189-4482-97f0-e78b8cac49c6",
      "m1": "ز یاقوت مر تخت را پایه بود",
      "m2": "که تخت کیان بود و پرمایه بود",
      "verse_number": 38
    },
    {
      "id": "7ed554b1-6566-43de-b533-b5cbb81b4330",
      "m1": "یک ایوان همه جامهٔ رود و می",
      "m2": "بیاورده از پارس و اهواز و ری",
      "verse_number": 39
    },
    {
      "id": "7d50fc40-f9c0-429a-b90e-65fbba4c04a4",
      "m1": "بیاراست رودابه را چون نگار",
      "m2": "پر از جامه و رنگ و بوی بهار",
      "verse_number": 40
    },
    {
      "id": "1dcad5da-0548-4d44-a07a-6e2a50858f82",
      "m1": "همه کابلستان شد آراسته",
      "m2": "پر از رنگ و بوی و پر از خواسته",
      "verse_number": 41
    },
    {
      "id": "49afe747-9146-41bc-a78f-0aefef722e79",
      "m1": "همه پشت پیلان بیاراستند",
      "m2": "ز کابل پرستندگان خواستند",
      "verse_number": 42
    },
    {
      "id": "18597131-3416-4a6d-8967-6b9116627e0e",
      "m1": "نشستند بر پیل رامشگران",
      "m2": "نهاده به سر بر زر افسران",
      "verse_number": 43
    },
    {
      "id": "bb27248a-9acf-46b2-a789-e8aaeb506038",
      "m1": "پذیره شدن را بیاراستند",
      "m2": "نثارش همه مشک و زر خواستند",
      "verse_number": 44
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 44
  }
}