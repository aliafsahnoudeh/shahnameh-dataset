{
  "id": "454355c6-0ac2-4f5e-bd75-512a49b3cf66",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "b7333ef7-8fa9-4861-ad4c-d8576c4065a9",
      "m1": "بسی برنیامد برین روزگار",
      "m2": "که سرو سهی چون گل آمد به بار",
      "verse_number": 1
    },
    {
      "id": "eed40c5b-a70c-44d0-90eb-1869cbf4270d",
      "m1": "چو نه ماه بگذشت بر ماهروی",
      "m2": "یکی کودک آمد به بالای اوی",
      "verse_number": 2
    },
    {
      "id": "00009c8f-8471-453c-8e7f-f35dddaadf31",
      "m1": "تو گفتی که بازآمد اسفندیار",
      "m2": "وگر نامدار اردشیر سوار",
      "verse_number": 3
    },
    {
      "id": "6e6724b9-ce2e-4da5-b55f-b61f1bf51e29",
      "m1": "ورا نام شاپور کرد اورمزد",
      "m2": "که سروی بد اندر میان فرزد",
      "verse_number": 4
    },
    {
      "id": "151a73ab-dc8c-4545-879d-a94db9f4f824",
      "m1": "چنین تا برآمد برین هفت سال",
      "m2": "ببود اورمزد از جهان بیهمال",
      "verse_number": 5
    },
    {
      "id": "748c43e2-c9cb-4050-a69e-e43a9921e0d3",
      "m1": "ز هرکس نهانش همی داشتند",
      "m2": "به جایی ببازیش نگذاشتند",
      "verse_number": 6
    },
    {
      "id": "02413007-2b7f-43af-ab73-3e09d4680f06",
      "m1": "به نخچیر شد هفت روز اردشیر",
      "m2": "بشد نیز شاپور نخچیرگیر",
      "verse_number": 7
    },
    {
      "id": "8ea681eb-a8db-451a-a09a-534a37769628",
      "m1": "نهان اورمزد از میان گروه",
      "m2": "بیامد کز آموختن شد ستوه",
      "verse_number": 8
    },
    {
      "id": "6206bdc6-ecae-4d26-826d-0629d06ecb72",
      "m1": "دوان شد به میدان شاه اردشیر",
      "m2": "کمانی به یک دست و دیگر دو تیر",
      "verse_number": 9
    },
    {
      "id": "01e94c57-8441-4cc0-9445-7b997a3f9fca",
      "m1": "ابا کودکان چند و چوگان و گوی",
      "m2": "به میدان شاه اندر آمد ز کوی",
      "verse_number": 10
    },
    {
      "id": "7f5153e7-3589-42dd-99d4-f65371ad7878",
      "m1": "جهاندار هم در زمان با سپاه",
      "m2": "به میدان بیامد ز نخچیرگاه",
      "verse_number": 11
    },
    {
      "id": "0f3e9657-c39b-4c7f-9ff1-29695c33d74a",
      "m1": "ابا موبدان موبد تیزویر",
      "m2": "به نزدیک ایوان رسید اردشیر",
      "verse_number": 12
    },
    {
      "id": "a9e68e1f-e84c-4b9f-b24a-e1768c066dfe",
      "m1": "بزد کودکی نیز چوگان ز راه",
      "m2": "بشد گوی گردان به نزدیک شاه",
      "verse_number": 13
    },
    {
      "id": "246d2261-e541-457a-85f0-bf512097e9ba",
      "m1": "نرفتند زیشان پس گوی کس",
      "m2": "بماندند بر جای ناکام بس",
      "verse_number": 14
    },
    {
      "id": "bd1cdf3e-caa2-49ef-84be-b996307ad4b3",
      "m1": "دوان اورمزد از میانه برفت",
      "m2": "به پیش جهاندار چون باد تفت",
      "verse_number": 15
    },
    {
      "id": "406ac087-1a10-4272-97f7-3af6c626ce7b",
      "m1": "ز پیش نیا زود برداشت گوی",
      "m2": "ازو گشت لشکر پر از گفتوگوی",
      "verse_number": 16
    },
    {
      "id": "ed23647f-e584-41e2-8189-2883f00c9a52",
      "m1": "ازان پس خروشی برآورد سخت",
      "m2": "کزو خیره شد شاه پیروز بخت",
      "verse_number": 17
    },
    {
      "id": "17e60d3b-a0ea-4c24-88ee-412b980530a1",
      "m1": "به موبد چنین گفت کین پاکزاد",
      "m2": "نگه کن که تا از که دارد نژاد",
      "verse_number": 18
    },
    {
      "id": "6cf66f03-f7f0-4516-b4ea-8e9d08335a79",
      "m1": "بپرسید موبد ندانست کس",
      "m2": "همه خامشی برگزیدند و بس",
      "verse_number": 19
    },
    {
      "id": "45d8ef93-791a-4db1-a94b-b44151c800bd",
      "m1": "به موبد چنین گفت پس شهریار",
      "m2": "که بردارش از خاک و نزد من آر",
      "verse_number": 20
    },
    {
      "id": "e6e1ff97-13ad-4a81-ac17-072701794c5c",
      "m1": "بشد موبد و برگرفتش ز گرد",
      "m2": "ببردش بر شاه آزادمرد",
      "verse_number": 21
    },
    {
      "id": "6fef08d1-c732-42e4-a2dc-29027dcbd56e",
      "m1": "بدو گفت شاه این گرانمایه خرد",
      "m2": "ترا از نژاد که باید شمرد",
      "verse_number": 22
    },
    {
      "id": "aaeeb8bc-fdbb-40c8-be8e-3a63ec0ecdf7",
      "m1": "نترسید کودک به آواز گفت",
      "m2": "که نام نژادم نباید نهفت",
      "verse_number": 23
    },
    {
      "id": "10aa48a7-4e33-4cbf-96bc-5ef999860520",
      "m1": "منم پور شاپور کو پور تست",
      "m2": "ز فرزند مهرک نژاد درست",
      "verse_number": 24
    },
    {
      "id": "6e64836a-8a7e-4abd-8bda-260774758149",
      "m1": "فروماند زان کار گیتی شگفت",
      "m2": "بخندید و اندیشه اندر گرفت",
      "verse_number": 25
    },
    {
      "id": "537e8768-2321-4539-95d8-8164e472885c",
      "m1": "بفرمود تا رفت شاپور پیش",
      "m2": "به پرسش گرفتش ز اندازه بیش",
      "verse_number": 26
    },
    {
      "id": "51618821-34e7-4874-bc17-c25af564700f",
      "m1": "بترسید شاپور آزادمرد",
      "m2": "دلش گشت پردرد و رخساره زرد",
      "verse_number": 27
    },
    {
      "id": "ead39d2a-10ca-47eb-b237-ac754d3f3780",
      "m1": "بخندید زو نامور شهریار",
      "m2": "بدو گفت فرزند پنهان مدار",
      "verse_number": 28
    },
    {
      "id": "b1ef6a7a-22c1-4330-b194-c05ca7a42214",
      "m1": "پسر باید از هرک باشد رواست",
      "m2": "که گویند کاین بچه پادشاست",
      "verse_number": 29
    },
    {
      "id": "b0e3a05c-dfc9-4e87-846b-b7dd02efa532",
      "m1": "بدو گفت شاپور نوشه بدی",
      "m2": "جهان را به دیدار توشه بدی",
      "verse_number": 30
    },
    {
      "id": "bba87ed4-9a99-4426-bc9d-5b9770b24acf",
      "m1": "ز پشت منست این و نام اورمزد",
      "m2": "درخشنده چون لاله اندر فرزد",
      "verse_number": 31
    },
    {
      "id": "92c74958-fce6-4db0-ae58-79395c8b2193",
      "m1": "نهان داشتم چندش از شهریار",
      "m2": "بدان تا برآید بر از میوهدار",
      "verse_number": 32
    },
    {
      "id": "da3db904-463f-4751-9d52-d7cc3110a35d",
      "m1": "گرانمایه از دختر مهرک است",
      "m2": "ز پشت منست این مرا بیشکست",
      "verse_number": 33
    },
    {
      "id": "b4b85031-49f9-4647-8736-38a402f5baef",
      "m1": "ز آب و ز چاه آن کجا رفته بود",
      "m2": "پسر گفت و پرسید و چندی شنود",
      "verse_number": 34
    },
    {
      "id": "17e79f30-aab2-474c-a140-47898be8184c",
      "m1": "ز گفتار او شاد شد اردشیر",
      "m2": "به ایوان خرامید خود با وزیر",
      "verse_number": 35
    },
    {
      "id": "3b129f44-3b55-4732-98d1-23e5c0a86681",
      "m1": "گرفته دلاویز را بر کنار",
      "m2": "ز ایوان سوی تخت شد شهریار",
      "verse_number": 36
    },
    {
      "id": "8efe7f87-d2c8-4e9d-835e-ed5209bd5fbd",
      "m1": "بیاراست زرین یکی زیرگاه",
      "m2": "یکی طوق فرمود و زرین کلاه",
      "verse_number": 37
    },
    {
      "id": "31ef1522-4c87-47e2-9a9e-a4dfda931a3e",
      "m1": "سر خرد کودک بیاراستند",
      "m2": "بس از گنج در و گهر خواستند",
      "verse_number": 38
    },
    {
      "id": "30ad587f-d787-4701-a95f-9929a62f41eb",
      "m1": "همی ریخت تا شد سرش ناپدید",
      "m2": "تنش را نیا زان میان برکشید",
      "verse_number": 39
    },
    {
      "id": "4ed80373-cb81-4efa-9fde-e88336d85c0e",
      "m1": "بسی زر و گوهر به درویش داد",
      "m2": "خردمند را خواسته بیش داد",
      "verse_number": 40
    },
    {
      "id": "ad8d4381-382d-43a5-9b2c-e792120c85a2",
      "m1": "به دیبا بیاراست آتشکده",
      "m2": "هم ایوان نوروز و کاخ سده",
      "verse_number": 41
    },
    {
      "id": "e0c730b7-b175-4ad6-8d81-b011dfd447b9",
      "m1": "یکی بزمگه ساخت با مهتران",
      "m2": "نشستند هرجای رامشگران",
      "verse_number": 42
    },
    {
      "id": "04d901e9-ef06-4141-8144-dcf0f9779875",
      "m1": "چنین گفت با نامداران شهر",
      "m2": "هرانکس که او از خرد داشت بهر",
      "verse_number": 43
    },
    {
      "id": "0ee23ef4-8e3c-4c24-8a05-dbead2d421e6",
      "m1": "که از گفت دانا ستاره شمر",
      "m2": "نباید که هرگز کند کس گذر",
      "verse_number": 44
    },
    {
      "id": "d7dfe277-f8aa-4ac7-a184-b4757557f6a1",
      "m1": "چنین گفته بد کید هندی که بخت",
      "m2": "نگردد ترا ساز و خرم به تخت",
      "verse_number": 45
    },
    {
      "id": "e5ac2af2-9f65-486a-a965-dbb75d7da5d9",
      "m1": "نه کشور نه افسر نه گنج و سپاه",
      "m2": "نه دیهیم شاهی نه فر کلاه",
      "verse_number": 46
    },
    {
      "id": "88ecac83-8852-40a2-b6c1-d378b497d97a",
      "m1": "مگر تخمهٔ مهرک نوشزاد",
      "m2": "بیامیزد آن دوده با ان نژاد",
      "verse_number": 47
    },
    {
      "id": "0a8a862a-52b3-4038-b03e-3b082482580e",
      "m1": "کنون سالیان اندر آمد به هشت",
      "m2": "که جز به آرزو چرخ بر ما نگشت",
      "verse_number": 48
    },
    {
      "id": "2db509af-bbee-4274-959e-68bd1b7f856d",
      "m1": "چو شاپور رفت اندر آرام خویش",
      "m2": "ز گیتی ندیده به جز کام خویش",
      "verse_number": 49
    },
    {
      "id": "b25f3e66-b42b-4929-b6aa-bb018b06cc23",
      "m1": "زمین هفت کشور مرا گشت راست",
      "m2": "دلم یافت از بخت چیزی که خواست",
      "verse_number": 50
    },
    {
      "id": "b56f6d24-68ea-43ec-bc8b-0ee04b605ecf",
      "m1": "وزان پس بر کارداران اوی",
      "m2": "شهنشاه کردند عنوان اوی",
      "verse_number": 51
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 51
  }
}