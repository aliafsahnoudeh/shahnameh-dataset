{
  "id": "0fd8f433-cf2b-43d2-b93c-34f8268c36fa",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "8c4a0190-7a7c-46ef-8a14-863ab047fa8d",
      "m1": "چو شاپور شد همچو سرو بلند",
      "m2": "ز چشم بدش بود بیم گزند",
      "verse_number": 1
    },
    {
      "id": "1fca8403-5d61-4b3d-90ad-40d50b8eaa80",
      "m1": "نبودی جدا یک زمان ز اردشیر",
      "m2": "ورا همچو دستور بودی وزیر",
      "verse_number": 2
    },
    {
      "id": "24f71731-e065-413e-830c-0cd08bcce148",
      "m1": "نپرداختی شاه روزی ز جنگ",
      "m2": "به شادی نبودیش جای درنگ",
      "verse_number": 3
    },
    {
      "id": "cc710355-d479-4dc5-8254-b7b237edd473",
      "m1": "چو جایی ز دشمن بپرداختی",
      "m2": "دگر بدکنش سر برافراختی",
      "verse_number": 4
    },
    {
      "id": "3eadd927-c124-47f7-b649-e471908ef401",
      "m1": "همی گفت کز کردگار جهان",
      "m2": "بخواهم همی آشکار و نهان",
      "verse_number": 5
    },
    {
      "id": "defbea6c-2da0-40e1-b6d7-0aea4236ac67",
      "m1": "که بیدشمن آرم جهان را به دست",
      "m2": "نباشم مگر شاد و یزدانپرست",
      "verse_number": 6
    },
    {
      "id": "e924f773-9bd5-4c88-8832-696291a84ce9",
      "m1": "بدو گفت فرخنده دستور اوی",
      "m2": "که ای شاه روشندل و راهجوی",
      "verse_number": 7
    },
    {
      "id": "a63c5f41-54e3-4f24-8df9-75e6079a74cc",
      "m1": "سوی کید هندی فرستیم کس",
      "m2": "که دانش پژوهست و فریادرس",
      "verse_number": 8
    },
    {
      "id": "979d938e-f680-4329-9d40-546bb465f844",
      "m1": "بداند شمار سپهر بلند",
      "m2": "در پادشاهی و راه گزند",
      "verse_number": 9
    },
    {
      "id": "268aa396-0cd7-4869-8efb-1102de9cd929",
      "m1": "اگر هفت کشور ترا بی همال",
      "m2": "بخواهد بدن بازیابد به فال",
      "verse_number": 10
    },
    {
      "id": "01e6e98d-72d5-4c71-9866-d7401b86bfba",
      "m1": "یکایک بگوید ندارد به رنج",
      "m2": "نخواهد بدین پاسخ از شاه گنج",
      "verse_number": 11
    },
    {
      "id": "eb39da01-939b-4c24-948c-e25ce3443adf",
      "m1": "چو بشنید بگزید شاه اردشیر",
      "m2": "جوانی گرانمایه و تیزویر",
      "verse_number": 12
    },
    {
      "id": "bd78f331-0b18-4b26-84e5-09fc31c8da51",
      "m1": "فرستاد نزدیک دانا به هند",
      "m2": "بسی اسپ و دینار و چندی پرند",
      "verse_number": 13
    },
    {
      "id": "c43a7ead-af74-44d4-a414-c73d27eec43f",
      "m1": "بدو گفت رو پیش دانا بگوی",
      "m2": "که ای مرد نیکاختر و راهجوی",
      "verse_number": 14
    },
    {
      "id": "b592cb30-2026-43e8-86be-d4543df74234",
      "m1": "به اختر نگه کن که تا من ز جنگ",
      "m2": "کی آسایم و کشور آرم به چنگ",
      "verse_number": 15
    },
    {
      "id": "b71cc929-602f-4312-ba91-d2b0312e31bf",
      "m1": "اگر بود خواهد بدین دستگاه",
      "m2": "به تدبیر آن زور بنمای راه",
      "verse_number": 16
    },
    {
      "id": "01c804d2-549b-4527-9083-e9c403e09fab",
      "m1": "وگر نیست این تا نباشم به رنج",
      "m2": "برین گونه نپراگند نیز گنج",
      "verse_number": 17
    },
    {
      "id": "1a71d834-69ea-4475-b0eb-2124d15619f5",
      "m1": "بیامد فرستادهٔ شهریار",
      "m2": "بر کید با هدیه و با نثار",
      "verse_number": 18
    },
    {
      "id": "42f133f1-e645-4952-ade4-5d39a36af757",
      "m1": "بگفت آنک با او شهنشاه گفت",
      "m2": "همه رازها برگشاد از نهفت",
      "verse_number": 19
    },
    {
      "id": "d07785ae-c96d-4095-8a3b-af1f49094535",
      "m1": "بپرسید زو کید و غمخواره شد",
      "m2": "ز پرسش سوی دانش و چاره شد",
      "verse_number": 20
    },
    {
      "id": "a684b7d8-6496-43a2-bf76-8377998dc623",
      "m1": "بیاورد صلاب و اختر گرفت",
      "m2": "یکی زیج رومی به بر در گرفت",
      "verse_number": 21
    },
    {
      "id": "8a56122c-2a4f-4968-8da7-b6cffd92e6f6",
      "m1": "نگه کرد بر کار چرخ بلند",
      "m2": "ز آسانی و سود و درد و گزند",
      "verse_number": 22
    },
    {
      "id": "dccc854e-74d5-4b82-a0f7-54a3218e0cfd",
      "m1": "فرستاده را گفت کردم شمار",
      "m2": "از ایران و از اختر شهریار",
      "verse_number": 23
    },
    {
      "id": "bcd28dbd-429d-4bbe-b7fe-8de5ad8f28ff",
      "m1": "گر از گوهر مهرک نوشزاد",
      "m2": "برآمیزد این تخمه با آن نژاد",
      "verse_number": 24
    },
    {
      "id": "ce16cacc-ab39-4096-b0df-d0b4d6c1ad54",
      "m1": "نشیند به آرام بر تخت شاه",
      "m2": "نباید فرستاد هر سو سپاه",
      "verse_number": 25
    },
    {
      "id": "20e417ff-cdfb-4ae4-b26d-6a3cded34140",
      "m1": "بیفزایدش گنج و کاهدش رنج",
      "m2": "تو شو کینهٔ این دو گوهر بسنج",
      "verse_number": 26
    },
    {
      "id": "b63fa724-c294-4b7d-9ab7-fb1b8d3aca5e",
      "m1": "گر این کرد ایران ورا گشت راست",
      "m2": "بیابد همه کام دل هرچ خواست",
      "verse_number": 27
    },
    {
      "id": "3db9ff9b-b2a6-45dd-af98-f0b395f71149",
      "m1": "فرستاده را چیز بخشید و گفت",
      "m2": "کزین هرچ گفتم نباید نهفت",
      "verse_number": 28
    },
    {
      "id": "8e5c6348-8f2a-4c97-a933-65ed88648732",
      "m1": "گر او زین نپیچد سپهر بلند",
      "m2": "کند اینک گفتم برو ارجمند",
      "verse_number": 29
    },
    {
      "id": "d91a19d8-695c-415d-90bd-9f702a3db17d",
      "m1": "فرستاده آمد بر شهریار",
      "m2": "بگفت آنچ بشنید زان نامدار",
      "verse_number": 30
    },
    {
      "id": "1235784e-975b-4492-a12d-698a6ab70b24",
      "m1": "چو بشنید گفتار او اردشیر",
      "m2": "دلش گشت پر درد و رخ چون زریر",
      "verse_number": 31
    },
    {
      "id": "39317374-3a2f-4064-96eb-cf1ce2ff182f",
      "m1": "فرستاده را گفت هرگز مباد",
      "m2": "که من بینم از تخم مهرک نژاد",
      "verse_number": 32
    },
    {
      "id": "3270df23-c39e-4533-89f2-8bb0bf1b78ee",
      "m1": "به خانه درون دشمن آرم ز کوی",
      "m2": "شود با بر و بوم من کینهجوی",
      "verse_number": 33
    },
    {
      "id": "71cbfb79-8cc3-492c-b8c8-4f2051bc7218",
      "m1": "دریغ آن پراگندن گنج من",
      "m2": "فرستادن مردم و رنج من",
      "verse_number": 34
    },
    {
      "id": "e05da916-12dc-4f27-918a-d7226d915365",
      "m1": "ز مهرک یکی دختری ماند و بس",
      "m2": "که او را به جهرم ندیدست کس",
      "verse_number": 35
    },
    {
      "id": "33b643cf-e96a-473a-8b46-766eb772aba8",
      "m1": "بفرمایم اکنون که جوینده باز",
      "m2": "ز روم و ز چین و ز هند و طراز",
      "verse_number": 36
    },
    {
      "id": "7dc72223-19ac-4461-b10b-c2355b028ae1",
      "m1": "بر آتش چو یابمش بریان کنم",
      "m2": "برو خاک را زار و گریان کنم",
      "verse_number": 37
    },
    {
      "id": "e6adc8d6-e1b7-4f8c-9de9-bdecad629306",
      "m1": "به جهرم فرستاد چندی سوار",
      "m2": "یکی مرد جوینده و کینهدار",
      "verse_number": 38
    },
    {
      "id": "6824c476-014f-4d08-9b15-6d4f3b7eccad",
      "m1": "چو آگاه شد دخت مهرک بجست",
      "m2": "سوی خان مهتر به کنجی نشست",
      "verse_number": 39
    },
    {
      "id": "11a6d36f-7599-447d-9a9b-0727bab6447c",
      "m1": "چو بنشست آن دخت مهرک بده",
      "m2": "مر او را گرامی همی کرد مه",
      "verse_number": 40
    },
    {
      "id": "ef8d48e0-54b5-4451-8cdd-1a755919485a",
      "m1": "ببالید بر سان سرو سهی",
      "m2": "خردمند با زیب و با فرهی",
      "verse_number": 41
    },
    {
      "id": "9946d76e-606b-41ab-8494-265eed412079",
      "m1": "مر او را دران بوم همتا نبود",
      "m2": "به کشور چنو سرو بالا نبود",
      "verse_number": 42
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 42
  },
