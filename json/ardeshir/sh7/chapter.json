{
  "id": "31f2ec60-b3ab-438e-ba7a-2a6000c8aa39",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "d9fda6c7-c6a8-48b0-991a-0f0ac66261cd",
      "m1": "کنون بشنو از دخت مهرک سخن",
      "m2": "ابا گرد شاپور شمشیرزن",
      "verse_number": 1
    },
    {
      "id": "401a0bf0-0110-40a2-8e1a-d6f0ffb0511c",
      "m1": "چو لختی برآمد برین روزگار",
      "m2": "فروزنده شد دولت شهریار",
      "verse_number": 2
    },
    {
      "id": "f55498ad-b1a6-43bd-ae74-1c556df44e35",
      "m1": "به نخچیر شد شاه روزی پگاه",
      "m2": "خردمند شاپور با او به راه",
      "verse_number": 3
    },
    {
      "id": "4e08433a-72f2-4eb6-b1b9-4c653d0d12ab",
      "m1": "به هر سو سواران همی تاختند",
      "m2": "ز نخچیر دشتی بپرداختند",
      "verse_number": 4
    },
    {
      "id": "abc1de71-1131-46d5-8710-ed876b4e90bb",
      "m1": "پدید آمد از دور دشتی فراخ",
      "m2": "پر از باغ و میدان و ایوان و کاخ",
      "verse_number": 5
    },
    {
      "id": "89a01a71-f5ef-4375-b669-7d3d8e288abe",
      "m1": "همی تاخت شاپور تا پیش ده",
      "m2": "فرود آمد از راه در خان مه",
      "verse_number": 6
    },
    {
      "id": "9bc3478a-1ff9-429d-8290-04097750afa8",
      "m1": "یکی باغ بد کش و خرم سرای",
      "m2": "جوان اندر آمد بدان سبز جای",
      "verse_number": 7
    },
    {
      "id": "446cbba6-3f05-498b-a2de-fa56ef6ca0ea",
      "m1": "یکی دختری دید بر سان ماه",
      "m2": "فروهشته از چرخ دلوی به چاه",
      "verse_number": 8
    },
    {
      "id": "fdefa0c5-8277-43b6-a3ed-a0a145b052fe",
      "m1": "چو آن ماهرخ روی شاپور دید",
      "m2": "بیامد برو آفرین گسترید",
      "verse_number": 9
    },
    {
      "id": "36e82075-00a2-4050-9815-9f7536ae3c25",
      "m1": "که شادان بدی شاه و خندان بدی",
      "m2": "همه ساله از بیگزندان بدی",
      "verse_number": 10
    },
    {
      "id": "f1667a52-ea4c-4ff7-92c5-18c398839af2",
      "m1": "کنون بیگمان تشنه باشد ستور",
      "m2": "بدین ده رود اندرون آب شور",
      "verse_number": 11
    },
    {
      "id": "7ea181d8-5de4-426d-8f3d-da7a86457237",
      "m1": "به چاه اندرون آب سردست و خوش",
      "m2": "بفرمای تا من بوم آبکش",
      "verse_number": 12
    },
    {
      "id": "4f16bb5c-8e5e-449e-96d2-e796af9bbdc1",
      "m1": "بدو گفت شاپور کای ماهروی",
      "m2": "چرا رنجه گشتی بدین گفتوگوی",
      "verse_number": 13
    },
    {
      "id": "a3719358-cf4f-4140-8c35-e56a13937e8f",
      "m1": "که باشند با من پرستنده مرد",
      "m2": "کزین چاه بیبن کشند آب سرد",
      "verse_number": 14
    },
    {
      "id": "7e9bf34f-1a2b-43cb-8e83-f6e6f0e1571e",
      "m1": "ز برنا کنیزک بپیچید روی",
      "m2": "بشد دور و بنشست بر پیش جوی",
      "verse_number": 15
    },
    {
      "id": "d52e387b-2149-4fa5-ab92-c435aec98ab8",
      "m1": "پرستندهای را بفرمود شاه",
      "m2": "که دلو آور و آب برکش ز چاه",
      "verse_number": 16
    },
    {
      "id": "8748e3ca-1f66-4f65-b35d-5d66e9e39469",
      "m1": "پرستنده بشنید و آمد دوان",
      "m2": "رسن برد بر چرخ دلو گران",
      "verse_number": 17
    },
    {
      "id": "64a9adb5-2f31-44d8-96a9-323df540f0ab",
      "m1": "چو دلو گرانسنگ پر آب گشت",
      "m2": "پرستنده را روی پرتاب گشت",
      "verse_number": 18
    },
    {
      "id": "b48b2146-2042-449e-adae-72946201b06e",
      "m1": "چو دلو گران برنیامد ز چاه",
      "m2": "بیامد ژکان زود شاپور شاه",
      "verse_number": 19
    },
    {
      "id": "29315664-f8c9-4b13-b3eb-c782f9f4ac69",
      "m1": "پرستنده را گفت کای نیمزن",
      "m2": "نه زن داشت این دلو و چندین رسن",
      "verse_number": 20
    },
    {
      "id": "3b4fba20-25d0-4fae-b411-6324f2da4923",
      "m1": "همی برکشید آب چندین ز چاه",
      "m2": "تو گشتی پر از رنج و فریادخواه",
      "verse_number": 21
    },
    {
      "id": "5c145434-54a3-4dbb-9af6-c5a1429a0ab3",
      "m1": "بیامد رسن بستد از پیشکار",
      "m2": "شد آن کار دشوار بر شاه خوار",
      "verse_number": 22
    },
    {
      "id": "7d5b481d-9f03-4b23-b58e-c7767430e816",
      "m1": "ز دلو گران شاه چون رنج دید",
      "m2": "بر آن خوبرخ آفرین گسترید",
      "verse_number": 23
    },
    {
      "id": "42fb55a5-17fc-46b1-8791-187f1f45b8d0",
      "m1": "که برتافت دلوی برین سان گران",
      "m2": "همانا که هست از نژاد سران",
      "verse_number": 24
    },
    {
      "id": "5b860c2b-2202-49dc-8cec-a3954c2b89b9",
      "m1": "کنیزک چو او دلو را برکشید",
      "m2": "بیامد به مهر آفرین گسترید",
      "verse_number": 25
    },
    {
      "id": "496b8aaa-0107-42ec-a8f4-a449896e6d94",
      "m1": "که نوشه بدی تا بود روزگار",
      "m2": "همیشه خرد بادت آموزگار",
      "verse_number": 26
    },
    {
      "id": "b473b505-81b5-4127-b952-718c3946033d",
      "m1": "به نیروی شاپور شاه اردشیر",
      "m2": "شود بیگمان آب در چاه شیر",
      "verse_number": 27
    },
    {
      "id": "8aa60137-e864-4900-83f4-bd0057167b23",
      "m1": "جوان گفت با دختر چربگوی",
      "m2": "چه دانی که شاپورم ای ماهروی",
      "verse_number": 28
    },
    {
      "id": "74ba22ff-5b32-4e98-892a-ed3136751b60",
      "m1": "چنین داد پاسخ که این داستان",
      "m2": "شنیدم بسی از لب راستان",
      "verse_number": 29
    },
    {
      "id": "2320cdd7-e12b-4183-828c-85f8077d9d4e",
      "m1": "که شاپور گردست با زور پیل",
      "m2": "به بخشندگی همچو دریای نیل",
      "verse_number": 30
    },
    {
      "id": "b564213e-991d-402e-9990-035473bc39f2",
      "m1": "به بالای سروست و رویینتنست",
      "m2": "به هرچیز مانندهٔ بهمنست",
      "verse_number": 31
    },
    {
      "id": "cc946c94-abaf-46fd-ac89-df7827ac3863",
      "m1": "بدو گفت شاپور کای ماهروی",
      "m2": "سخن هرچ پرسم ترا راستگوی",
      "verse_number": 32
    },
    {
      "id": "c2be3f6e-0abf-4cef-ba2f-c1f8b6920185",
      "m1": "پدیدار کن تا نژاد تو چیست",
      "m2": "برین چهرهٔ تو نشان کییست",
      "verse_number": 33
    },
    {
      "id": "1f2627e3-1879-49b6-b8ba-da98aaeef79b",
      "m1": "بدو گفت من دختر مهترم",
      "m2": "ازیرا چنین خوب و کنداورم",
      "verse_number": 34
    },
    {
      "id": "78179e04-f8f2-4419-ae03-4e7fd0ae60b5",
      "m1": "چنین داد پاسخ که هرگز دروغ",
      "m2": "بر شهریاران نگیرد فروغ",
      "verse_number": 35
    },
    {
      "id": "22851550-9cdf-4a24-b916-d65cb50d8c81",
      "m1": "کشاورز را دختر ماهروی",
      "m2": "نباشد بدین روی و این رنگ و بوی",
      "verse_number": 36
    },
    {
      "id": "fe0e5bb3-100b-4037-9a29-344bfb59c255",
      "m1": "کنیزک بدو گفت کای شهریار",
      "m2": "هرانگه که یابم به جان زینهار",
      "verse_number": 37
    },
    {
      "id": "5dfbf582-4432-4817-b7fe-b92f9f4b1783",
      "m1": "بگویم همه پیش تو من نژاد",
      "m2": "چو یابم ز خشم شهنشاه داد",
      "verse_number": 38
    },
    {
      "id": "1d34f4d8-f87d-43fc-acfe-167229979c8b",
      "m1": "بدو گفت شاپور کز بوستان",
      "m2": "نرست از چمن کینهٔ دوستان",
      "verse_number": 39
    },
    {
      "id": "842d72df-19eb-4a40-ac93-7bb7db04c519",
      "m1": "بگوی و ز من بیم در دل مدار",
      "m2": "نه از نامور دادگر شهریار",
      "verse_number": 40
    },
    {
      "id": "ee717e55-463e-479c-84ec-1a01a1a39479",
      "m1": "کنیزک بدو گفت کز راه داد",
      "m2": "منم دختر مهرک نوشزاد",
      "verse_number": 41
    },
    {
      "id": "25370f68-6e72-4109-a262-4b8776de5980",
      "m1": "مرا پارسایی بیاورد خرد",
      "m2": "بدین پرهنر مهتر ده سپرد",
      "verse_number": 42
    },
    {
      "id": "09951067-4bef-4b32-bbfd-80ad58d1919d",
      "m1": "من از بیم آن نامور شهریار",
      "m2": "چنین آبکش گشتم و پیشکار",
      "verse_number": 43
    },
    {
      "id": "3549c4e1-b5f7-4b8a-b252-c68a0cd57ffe",
      "m1": "بیامد بپردخت شاپور جای",
      "m2": "همی بود مهتر به پیشش به پای",
      "verse_number": 44
    },
    {
      "id": "d8b1cd13-378b-40e1-8bea-d0644414452d",
      "m1": "به دو گفت کین دختر خوبچهر",
      "m2": "به من ده بر من گوا کن سپهر",
      "verse_number": 45
    },
    {
      "id": "ad3012f6-aa14-4464-9114-1233d8b30a73",
      "m1": "بدو داد مهتر به فرمان اوی",
      "m2": "بر آیین آتشپرستان اوی",
      "verse_number": 46
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 46
  }
}