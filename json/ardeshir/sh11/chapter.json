{
  "id": "5e3baed7-9141-46ae-aaeb-b8e025e2ceda",
  "title": "بخش ۱۱",
  "verses": [
    {
      "id": "5bba2e2e-6bab-494b-88cf-df8a5459b9a8",
      "m1": "به گفتار این نامدار اردشیر",
      "m2": "همه گوش دارید برنا و پیر",
      "verse_number": 1
    },
    {
      "id": "d4cc0b15-91e4-478f-b949-3b563a8b9402",
      "m1": "هرانکس که داند که دادار هست",
      "m2": "نباشد مگر پاک و یزدان پرست",
      "verse_number": 2
    },
    {
      "id": "cd4fd203-1fed-4945-8ca0-de995158948b",
      "m1": "دگر آنک دانش مگیرید خوار",
      "m2": "اگر زیردستست و گر شهریار",
      "verse_number": 3
    },
    {
      "id": "0097e49e-fd6f-489f-b84f-41ea6877abbb",
      "m1": "سه دیگر بدانی که هرگز سخن",
      "m2": "نگردد بر مرد دانا کهن",
      "verse_number": 4
    },
    {
      "id": "42fe9fc3-aec3-4b96-bce5-ed2251e6f1d2",
      "m1": "چهارم چنان دان که بیم گناه",
      "m2": "فزون باشد از بند و زندان شاه",
      "verse_number": 5
    },
    {
      "id": "0745142a-355f-4976-85f7-d3433d6a9810",
      "m1": "به پنجم سخن مردم زشتگوی",
      "m2": "نگیرد به نزد کسان آبروی",
      "verse_number": 6
    },
    {
      "id": "b6e7b4fe-1f41-49bf-b6f2-74c38715f185",
      "m1": "بگویم یکی تازه اندرز نیز",
      "m2": "کجا برتر از دیده و جان و چیز",
      "verse_number": 7
    },
    {
      "id": "dc977bcf-71d5-4cd9-b8c4-040f0fda4953",
      "m1": "خنک آنک آباد دارد جهان",
      "m2": "بود آشکارای او چون نهان",
      "verse_number": 8
    },
    {
      "id": "6565dcf5-2707-443f-b2b7-45e761a7f414",
      "m1": "دگر آنک دارند آواز نرم",
      "m2": "خرد دارد و شرم و گفتار گرم",
      "verse_number": 9
    },
    {
      "id": "adce65f6-d52c-4683-b3f5-9be156faecae",
      "m1": "به پیش کسان سیم از بهر لاف",
      "m2": "به بیهوده بپراگند بر گزاف",
      "verse_number": 10
    },
    {
      "id": "9405ecb3-8131-4cd2-9d17-77b62ab23f7e",
      "m1": "ز مردم ندارد کسی زان سپاس",
      "m2": "نبپسندد آن مرد یزدان شناس",
      "verse_number": 11
    },
    {
      "id": "2d7800ee-a611-45ac-ab04-2f1cac85de62",
      "m1": "میانه گزینی بمانی به جای",
      "m2": "خردمند خوانند و پاکیزهرای",
      "verse_number": 12
    },
    {
      "id": "bb5ecb0f-5291-4199-bae5-4da3157ce6a2",
      "m1": "کزین بگذری پنج رایست پیش",
      "m2": "کجا تازه گردد ترا دین وکیش",
      "verse_number": 13
    },
    {
      "id": "f08bff46-59ff-4900-a9dc-fd890856aa83",
      "m1": "تن آسانی و شادی افزایدت",
      "m2": "که با شهد او زهر نگزایدت",
      "verse_number": 14
    },
    {
      "id": "aa297af1-df6f-45ae-8782-cc9fad5ffabd",
      "m1": "یکی آنک از بخشش دادگر",
      "m2": "به آز و به کوشش نیابی گذر",
      "verse_number": 15
    },
    {
      "id": "a93e60a5-a9eb-4132-801d-dba7eda7138d",
      "m1": "توانگر شود هرک خرسند گشت",
      "m2": "گل نوبهارش برومند گشت",
      "verse_number": 16
    },
    {
      "id": "23e6ed48-55af-4872-9dfc-1643a25cace7",
      "m1": "دگر بشکنی گردن آز را",
      "m2": "نگویی به پیش زنان راز را",
      "verse_number": 17
    },
    {
      "id": "321d0ac2-195c-4ff1-9a2f-f4ca256ad5bf",
      "m1": "سه دیگر ننازی به ننگ و نبرد",
      "m2": "که ننگ ونبرد آورد رنج و درد",
      "verse_number": 18
    },
    {
      "id": "8ad2e5ae-8d54-42ed-a4c7-3cf070e5fe6c",
      "m1": "چهارم که دل دور داری ز غم",
      "m2": "ز نا آمده دل نداری دژم",
      "verse_number": 19
    },
    {
      "id": "6f1ab2da-d2e1-46e9-b0dc-c4e3e7eb2257",
      "m1": "نه پیچی به کاری که کار تو نیست",
      "m2": "نتازی بدان کو شکار تو نیست",
      "verse_number": 20
    },
    {
      "id": "60e95433-9740-4440-9caf-e4d90bd2d7b9",
      "m1": "همه گوش دارید پند مرا",
      "m2": "سخن گفتن سودمند مرا",
      "verse_number": 21
    },
    {
      "id": "df9219bd-c34a-4874-8c46-639b7affdeb3",
      "m1": "بود بر دل هرکسی ارجمند",
      "m2": "که یابند ازو ایمنی از گزند",
      "verse_number": 22
    },
    {
      "id": "4cb15931-4947-4fdc-8f60-b33cd5154d71",
      "m1": "زمانی میاسای ز آموختن",
      "m2": "اگر جان همی خواهی افروختن",
      "verse_number": 23
    },
    {
      "id": "7eeb4995-106d-4f83-b6ec-1047602873c8",
      "m1": "چو فرزند باشد به فرهنگ دار",
      "m2": "زمانه ز بازی برو تنگ دار",
      "verse_number": 24
    },
    {
      "id": "c01e8a5a-8805-4c50-b977-7385b641fa27",
      "m1": "همه یاد دارید گفتار ما",
      "m2": "کشیدن بدین کار تیمار ما",
      "verse_number": 25
    },
    {
      "id": "d7254929-fa9d-4d70-82a3-d760fac04170",
      "m1": "هرآن کس که با داد و روشن دلید",
      "m2": "از آمیزش یکدگر مگسلید",
      "verse_number": 26
    },
    {
      "id": "b0b01d4f-fff2-4aad-b54d-16a529a031cf",
      "m1": "دل آرام دارید بر چار چیز",
      "m2": "کزو خوبی و سودمندیست نیز",
      "verse_number": 27
    },
    {
      "id": "0f776d54-205d-42a3-969d-47430c235c0d",
      "m1": "یکی بیم و آزرم و شرم خدای",
      "m2": "که باشد ترا یاور و رهنمای",
      "verse_number": 28
    },
    {
      "id": "d53e3057-4062-4463-8b1c-fd5e895fdcfe",
      "m1": "دگر داد دادن تن خویش را",
      "m2": "نگه داشتن دامن خویش را",
      "verse_number": 29
    },
    {
      "id": "8a4793ca-f54c-4ef1-852d-de554f5c211b",
      "m1": "به فرمان یزدان دل آراستن",
      "m2": "مرا چون تن خویشتن خواستن",
      "verse_number": 30
    },
    {
      "id": "f8d36109-ab3d-41fa-939c-981fe14d0a96",
      "m1": "سه دیگر که پیدا کنی راستی",
      "m2": "بدور افگنی کژی و کاستی",
      "verse_number": 31
    },
    {
      "id": "9f31f051-2f4b-4c5f-9d76-f12e8e232e91",
      "m1": "چهارم که از رای شاه جهان",
      "m2": "نپیچی دلت آشکار و نهان",
      "verse_number": 32
    },
    {
      "id": "181148fc-bbfe-4f7e-b65b-252613cd7dcd",
      "m1": "ورا چون تن خویش خواهی به مهر",
      "m2": "به فرمان او تازه گردد سپهر",
      "verse_number": 33
    },
    {
      "id": "5b43c7c3-f8c9-455f-bfe5-ab52aa9a2c6a",
      "m1": "دلت بسته داری به پیمان اوی",
      "m2": "روان را نپیچی ز فرمان اوی",
      "verse_number": 34
    },
    {
      "id": "180eceb9-4324-481c-b21b-4db6d8123bff",
      "m1": "برو مهر داری چو بر جان خویش",
      "m2": "چو با داد بینی نگهبان خویش",
      "verse_number": 35
    },
    {
      "id": "36a20ecc-267d-4571-9aab-a0e22ce96991",
      "m1": "غم پادشاهی جهانجوی راست",
      "m2": "ز گیتی فزونی سگالد نه کاست",
      "verse_number": 36
    },
    {
      "id": "342190db-9ee3-4c28-b769-8b9e2a084d77",
      "m1": "گر از کارداران وز لشکرش",
      "m2": "بداند که رنجست بر کشورش",
      "verse_number": 37
    },
    {
      "id": "557d9612-278e-4bb3-b18d-fb7e411a544a",
      "m1": "نیازد به داد او جهاندار نیست",
      "m2": "برو تاج شاهی سزاوار نیست",
      "verse_number": 38
    },
    {
      "id": "ca5df335-d616-4928-a208-801ea92642ef",
      "m1": "سیه کرد منشور شاهنشهی",
      "m2": "ازان پس نباشد ورا فرهی",
      "verse_number": 39
    },
    {
      "id": "77fff380-1b8e-4daf-aeb7-caac26617268",
      "m1": "چنان دان که بیدادگر شهریار",
      "m2": "بود شیر درنده در مرغزار",
      "verse_number": 40
    },
    {
      "id": "8fd73ca1-1b44-4130-9e83-7665fb0c18eb",
      "m1": "همان زیردستی که فرمان شاه",
      "m2": "به رنج و به کوشش ندارد نگاه",
      "verse_number": 41
    },
    {
      "id": "584252ec-356d-4ce6-a707-a246344b1fcc",
      "m1": "بود زندگانیش با درد و رنج",
      "m2": "نگردد کهن در سرای سپنج",
      "verse_number": 42
    },
    {
      "id": "c2470468-bf71-44ae-a561-639dfaf2a88a",
      "m1": "اگر مهتری یابد و بهتری",
      "m2": "نیابد به زفتی و کنداوری",
      "verse_number": 43
    },
    {
      "id": "4b912a63-91fd-42a7-ac5e-531b3dc5ee80",
      "m1": "دل زیردستان ما شاد باد",
      "m2": "هم از داد ماگیتی آباد باد",
      "verse_number": 44
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 44
  }
}