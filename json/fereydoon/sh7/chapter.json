{
  "id": "3439498e-fe75-41f9-8a55-c31b925e4df2",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "0a24d47e-44e9-4ee4-9709-2c4ae1684d82",
      "m1": "فرستادهٔ سلم چون گشت باز",
      "m2": "شهنشاه بنشست و بگشاد راز",
      "verse_number": 1
    },
    {
      "id": "16d956ba-783c-4362-95f7-76b38ab3320d",
      "m1": "گرامی جهانجوی را پیش خواند",
      "m2": "همه گفتها پیش او بازراند",
      "verse_number": 2
    },
    {
      "id": "826cbc45-026a-4f11-8694-149b1605cfb6",
      "m1": "ورا گفت کان دو پسر جنگجوی",
      "m2": "ز خاور سوی ما نهادند روی",
      "verse_number": 3
    },
    {
      "id": "1133dc8f-a8d5-4c62-9479-71b709829bd6",
      "m1": "از اختر چنین استشان بهره خود",
      "m2": "که باشند شادان به کردار بد",
      "verse_number": 4
    },
    {
      "id": "88f2cfe5-c2dd-4756-9cb2-ee47b4305694",
      "m1": "دگر آنکه دو کشور آبشخورست",
      "m2": "که آن بومها را درشتی برست",
      "verse_number": 5
    },
    {
      "id": "a79f8d91-f417-47f6-9a69-959b540fb0f0",
      "m1": "برادرت چندان برادر بود",
      "m2": "کجا مر ترا بر سر افسر بود",
      "verse_number": 6
    },
    {
      "id": "02224147-bffc-40d6-9966-f71ce9b5d786",
      "m1": "چو پژمرده شد روی رنگین تو",
      "m2": "نگردد دگر گرد بالین تو",
      "verse_number": 7
    },
    {
      "id": "96d9d998-f571-4aa6-b8cc-55ad16058c4d",
      "m1": "تو گر پیش شمشیر مهرآوری",
      "m2": "سرت گردد آشفته از داوری",
      "verse_number": 8
    },
    {
      "id": "ce057857-d1b1-4493-809e-cd2d1e1a3d26",
      "m1": "دو فرزند من کز دو دوش جهان",
      "m2": "برینسان گشادند بر من زبان",
      "verse_number": 9
    },
    {
      "id": "4140097c-21f1-4785-9bfb-e51af99dc5dc",
      "m1": "گرت سر بکارست بپسیچ کار",
      "m2": "در گنج بگشای و بربند بار",
      "verse_number": 10
    },
    {
      "id": "cadba8a6-2624-49c6-aa76-b1febc91a4aa",
      "m1": "تو گر چاشت را دست یازی به جام",
      "m2": "و گر نه خورند ای پسر بر تو شام",
      "verse_number": 11
    },
    {
      "id": "6c734cfb-5fa7-4df0-9420-b9a63e610392",
      "m1": "نباید ز گیتی ترا یار کس",
      "m2": "بیآزاری و راستی یار بس",
      "verse_number": 12
    },
    {
      "id": "1da47e2d-213a-43bd-9643-9657f095ebf0",
      "m1": "نگه کرد پس ایرج نامور",
      "m2": "برآن مهربان پاک فرخ پدر",
      "verse_number": 13
    },
    {
      "id": "1b573369-e880-4ae2-8dc4-cc6806fc5c0b",
      "m1": "چنین داد پاسخ که ای شهریار",
      "m2": "نگه کن بدین گردش روزگار",
      "verse_number": 14
    },
    {
      "id": "b601e968-3ea9-4733-b13e-f478ccbea8f4",
      "m1": "که چون باد بر ما همی بگذرد",
      "m2": "خردمند مردم چرا غم خورد",
      "verse_number": 15
    },
    {
      "id": "f8394bbc-aa54-4f12-9873-1c046052243d",
      "m1": "همی پژمراند رخ ارغوان",
      "m2": "کند تیره دیدار روشنروان",
      "verse_number": 16
    },
    {
      "id": "f07d43ee-9d8d-49b8-9591-607ec1269903",
      "m1": "به آغاز گنج است و فرجام رنج",
      "m2": "پس از رنج رفتن ز جای سپنچ",
      "verse_number": 17
    },
    {
      "id": "edf2fd85-d709-4427-8cbc-c80f167df66f",
      "m1": "چو بستر ز خاکست و بالین ز خشت",
      "m2": "درختی چرا باید امروز کشت",
      "verse_number": 18
    },
    {
      "id": "3961cc53-8dbd-49b0-bfd4-2dc73cc6efc0",
      "m1": "که هر چند چرخ از برش بگذرد",
      "m2": "تنش خون خورد بار کین آورد",
      "verse_number": 19
    },
    {
      "id": "5e5b22c4-a196-43a5-94d4-030d828d9bf6",
      "m1": "خداوند شمشیر و گاه و نگین",
      "m2": "چو ما دید بسیار و بیند زمین",
      "verse_number": 20
    },
    {
      "id": "0d7b1ba9-0d82-435c-a26a-cebcd6eafc26",
      "m1": "از آن تاجور نامداران پیش",
      "m2": "ندیدند کین اندر آیین خویش",
      "verse_number": 21
    },
    {
      "id": "ac7546b3-cda6-4aca-a7f7-78d54723adde",
      "m1": "چو دستور باشد مرا شهریار",
      "m2": "به بد نگذرانم بد روزگار",
      "verse_number": 22
    },
    {
      "id": "8ee3d061-14a1-4196-99ae-04b8e79c290a",
      "m1": "نباید مرا تاج و تخت و کلاه",
      "m2": "شوم پیش ایشان دوان بیسپاه",
      "verse_number": 23
    },
    {
      "id": "e453fc06-4deb-4cc5-967d-c861eec14088",
      "m1": "بگویم که ای نامداران من",
      "m2": "چنان چون گرامی تن و جان من",
      "verse_number": 24
    },
    {
      "id": "2e358a0a-4655-4e3b-8e9b-97413e0609d1",
      "m1": "به بیهوده از شهریار زمین",
      "m2": "مدارید خشم و مدارید کین",
      "verse_number": 25
    },
    {
      "id": "3ed40764-b249-41f1-88e2-f01804bb444f",
      "m1": "به گیتی مدارید چندین امید",
      "m2": "نگر تا چه بد کرد با جمشید",
      "verse_number": 26
    },
    {
      "id": "792c581c-3f5d-4170-a1c4-423245d2184a",
      "m1": "به فرجام هم شد ز گیتی بدر",
      "m2": "نماندش همان تاج و تخت و کمر",
      "verse_number": 27
    },
    {
      "id": "d4f2984f-5858-4761-b509-2b6f24a3f472",
      "m1": "مرا با شما هم به فرجام کار",
      "m2": "بباید چشیدن بد روزگار",
      "verse_number": 28
    },
    {
      "id": "0d685815-eb25-40c5-af64-497115ebdab0",
      "m1": "دل کینه ورشان بدین آورم",
      "m2": "سزاوارتر زانکه کین آورم",
      "verse_number": 29
    },
    {
      "id": "90606498-751e-4840-950a-c863b7ae6e3c",
      "m1": "بدو گفت شاه ای خردمند پور",
      "m2": "برادر همی رزم جوید تو سور",
      "verse_number": 30
    },
    {
      "id": "30738f8b-dd0d-4a28-84eb-4e3457acc443",
      "m1": "مرا این سخن یاد باید گرفت",
      "m2": "ز مه روشنایی نیاید شگفت",
      "verse_number": 31
    },
    {
      "id": "725744c1-d337-4af7-8ed4-69d9e4dcb06b",
      "m1": "ز تو پر خرد پاسخ ایدون سزید",
      "m2": "دلت مهر پیوند ایشان گزید",
      "verse_number": 32
    },
    {
      "id": "f0d5d0cd-8420-4bb2-94fc-11e2a2ebcb74",
      "m1": "ولیکن چو جانی شود بیبها",
      "m2": "نهد پر خرد در دم اژدها",
      "verse_number": 33
    },
    {
      "id": "b3e8fcd2-7969-41ff-af56-44bc37deb2c5",
      "m1": "چه پیش آیدش جز گزاینده زهر",
      "m2": "کش از آفرینش چنین است بهر",
      "verse_number": 34
    },
    {
      "id": "cec0cc9c-9fc6-43b3-a362-0b8224d0f6bb",
      "m1": "ترا ای پسر گر چنین است رای",
      "m2": "بیارای کار و بپرداز جای",
      "verse_number": 35
    },
    {
      "id": "95ff6d9d-9963-4de1-94d8-daedd9792dd6",
      "m1": "پرستنده چند از میان سپاه",
      "m2": "بفرمای کایند با تو به راه",
      "verse_number": 36
    },
    {
      "id": "b8fae656-f657-4b84-ad7c-2623596c6c7d",
      "m1": "ز درد دل اکنون یکی نامه من",
      "m2": "نویسم فرستم بدان انجمن",
      "verse_number": 37
    },
    {
      "id": "52571d03-69f6-4ed1-8f38-adef0bc2735d",
      "m1": "مگر باز بینم ترا تن درست",
      "m2": "که روشن روانم به دیدار تست",
      "verse_number": 38
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 38
  },
