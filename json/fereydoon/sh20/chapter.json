{
  "id": "7e972c2f-d959-4b4f-a8e2-0bc74bd30fed",
  "title": "بخش ۲۰",
  "verses": [
    {
      "id": "4ea6cc86-d90b-4102-a7ce-6e543f379d98",
      "m1": "تهی شد ز کینه سر کینه دار",
      "m2": "گریزان همی رفت سوی حصار",
      "verse_number": 1
    },
    {
      "id": "bb3d4269-44c6-40c9-989d-a8d646a9eba4",
      "m1": "پس اندر سپاه منوچهر شاه",
      "m2": "دمان و دنان برگرفتند راه",
      "verse_number": 2
    },
    {
      "id": "f7556271-4b01-42e5-a7f1-2a65aa5d023f",
      "m1": "چو شد سلم تا پیش دریا کنار",
      "m2": "ندید آنچه کشتی برآن رهگذار",
      "verse_number": 3
    },
    {
      "id": "c3fa0c58-b694-4d9d-b9c6-84da8f11e9e9",
      "m1": "چنان شد ز بس کشته و خسته دشت",
      "m2": "که پوینده را راه دشوار گشت",
      "verse_number": 4
    },
    {
      "id": "f4454725-f154-4ca8-b5eb-be71caf45f26",
      "m1": "پر از خشم و پر کینه سالار نو",
      "m2": "نشست از بر چرمهٔ تیزرو",
      "verse_number": 5
    },
    {
      "id": "0cb20671-cbde-44aa-821c-e16f1635713f",
      "m1": "بیفگند برگستوان و بتاخت",
      "m2": "به گرد سپه چرمه اندر نشاخت",
      "verse_number": 6
    },
    {
      "id": "87e89ffc-b902-4651-845d-be829c56328e",
      "m1": "رسید آنگهی تنگ در شاه روم",
      "m2": "خروشید کای مرد بیداد شوم",
      "verse_number": 7
    },
    {
      "id": "3004aa27-67f0-43a4-958f-d3ab88468907",
      "m1": "بکشتی برادر ز بهر کلاه",
      "m2": "کله یافتی چند پویی براه",
      "verse_number": 8
    },
    {
      "id": "4f5aca46-fe8b-404c-b38a-c7fae764432e",
      "m1": "کنون تاجت آوردم ای شاه و تخت",
      "m2": "به بار آمد آن خسروانی درخت",
      "verse_number": 9
    },
    {
      "id": "4a225313-46ac-4dfe-872b-2a393208b5a8",
      "m1": "زتاج بزرگی گریزان مشو",
      "m2": "فریدونت گاهی بیاراست نو",
      "verse_number": 10
    },
    {
      "id": "9ca2d496-8e4f-4f1b-96c0-38f43863f680",
      "m1": "درختی که پروردی آمد به بار",
      "m2": "بیابی هم اکنون برش در کنار",
      "verse_number": 11
    },
    {
      "id": "cc8a790b-e493-4798-8e6c-3067858fc8a5",
      "m1": "اگر بار خارست خود کشتهای",
      "m2": "و گر پرنیانست خود رشتهای",
      "verse_number": 12
    },
    {
      "id": "001b4fed-2d10-4846-8a98-aaa8ecd4ce4a",
      "m1": "همی تاخت اسپ اندرین گفتگوی",
      "m2": "یکایک به تنگی رسید اندر اوی",
      "verse_number": 13
    },
    {
      "id": "4ae8cb41-1790-49ca-92f3-3a1e0295f1d0",
      "m1": "یکی تیغ زد زود بر گردنش",
      "m2": "بدو نیمه شد خسروانی تنش",
      "verse_number": 14
    },
    {
      "id": "aaae03ba-ed92-4105-addb-1619f8dcae11",
      "m1": "بفرمود تا سرش برداشتند",
      "m2": "به نیزه به ابر اندر افراشتند",
      "verse_number": 15
    },
    {
      "id": "cc37dcf3-d762-4ee9-a6e7-09018ca5e05e",
      "m1": "بماندند لشکر شگفت اندر اوی",
      "m2": "ازان زور و آن بازوی جنگجوی",
      "verse_number": 16
    },
    {
      "id": "c183254c-3680-4e3e-8ef8-84872523ed4b",
      "m1": "همه لشکر سلم همچون رمه",
      "m2": "که بپراگند روزگار دمه",
      "verse_number": 17
    },
    {
      "id": "c7afeb2f-2d69-4022-8fab-c43047be2083",
      "m1": "برفتند یکسر گروها گروه",
      "m2": "پراگنده در دشت و دریا و کوه",
      "verse_number": 18
    },
    {
      "id": "9977ceb9-54e9-4557-afff-bf329e9912d1",
      "m1": "یکی پرخرد مرد پاکیزه مغز",
      "m2": "که بودش زبان پر ز گفتار نغز",
      "verse_number": 19
    },
    {
      "id": "50167310-99f4-4ea0-ac75-85e149529452",
      "m1": "بگفتند تا زی منوچهر شاه",
      "m2": "شود  گرم و باشد زبان سپاه",
      "verse_number": 20
    },
    {
      "id": "ba8ddb89-8f17-4acb-84f5-940ae5b09ea8",
      "m1": "بگوید که گفتند ما کهتریم",
      "m2": "زمین جز به فرمان او نسپریم",
      "verse_number": 21
    },
    {
      "id": "51a8b1f0-b6ed-4426-b806-80df97e4c54e",
      "m1": "گروهی خداوند بر چارپای",
      "m2": "گروهی خداوند کشت و سرای",
      "verse_number": 22
    },
    {
      "id": "1b49f8ef-76ea-4bb3-9266-cbde4d224156",
      "m1": "سپاهی بدین رزمگاه آمدیم",
      "m2": "نه بر آرزو کینه خواه آمدیم",
      "verse_number": 23
    },
    {
      "id": "9c8ffe45-bbaa-44da-8238-84653c93082f",
      "m1": "کنون سر به سر شاه را بندهایم",
      "m2": "دل و جان به مهر وی آگندهایم",
      "verse_number": 24
    },
    {
      "id": "a2381bf9-12da-45c5-8e9c-ca0f1b2b9ef3",
      "m1": "گرش رای جنگ است و خون ریختن",
      "m2": "نداریم نیروی آویختن",
      "verse_number": 25
    },
    {
      "id": "b9bc526c-30b2-4254-a351-a2d81bfd0f23",
      "m1": "سران یکسره پیش شاه آوریم",
      "m2": "بر او سر بیگناه آوریم",
      "verse_number": 26
    },
    {
      "id": "a82ca7d7-3c79-465c-90c2-3935bc005372",
      "m1": "براند هر آن کام کو را هواست",
      "m2": "برین بیگنه جان ما پادشاست",
      "verse_number": 27
    },
    {
      "id": "2a09a7f7-4800-4e4f-b09b-43300adba71d",
      "m1": "بگفت این سخن مرد بسیار هوش",
      "m2": "سپهدار خیره بدو دادگوش",
      "verse_number": 28
    },
    {
      "id": "ed3ad0b8-0bb4-4204-b1df-5176a5319a16",
      "m1": "چنین داد پاسخ که من کام خویش",
      "m2": "به خاک افگنم برکشم نام خویش",
      "verse_number": 29
    },
    {
      "id": "3603751a-e698-4cb9-8735-24bc968784b2",
      "m1": "هر آن چیز کان نز ره ایزدیست",
      "m2": "از آهرمنی گر ز دست بدیست",
      "verse_number": 30
    },
    {
      "id": "2eedd517-796f-4c5a-8847-44f610ee7de4",
      "m1": "سراسر ز دیدار من دور باد",
      "m2": "بدی را تن دیو رنجور باد",
      "verse_number": 31
    },
    {
      "id": "69d22041-f1f8-417e-b990-7b7695e0e20d",
      "m1": "شما گر همه کینهدار منید",
      "m2": "وگر دوستدارید و یار منید",
      "verse_number": 32
    },
    {
      "id": "03c705c4-2ff9-4893-ae26-9adbb300c406",
      "m1": "چو پیروزگر دادمان دستگاه",
      "m2": "گنه کار پیدا شد از بیگناه",
      "verse_number": 33
    },
    {
      "id": "8b8404d3-cd65-47da-bc47-c61f69da7ca7",
      "m1": "کنون روز دادست بیداد شد",
      "m2": "سران را سر از کشتن آزاد شد",
      "verse_number": 34
    },
    {
      "id": "5a29efe6-d563-434c-8300-a5ebeabc8091",
      "m1": "همه مهر جویید و افسون کنید",
      "m2": "ز تن آلت جنگ بیرون کنید",
      "verse_number": 35
    },
    {
      "id": "c81f7698-7afa-49e0-80ca-9053ea1c5a52",
      "m1": "خروشی بر آمد ز پرده سرای",
      "m2": "که ای پهلوانان فرخنده رای",
      "verse_number": 36
    },
    {
      "id": "0fd87ea8-86b9-4fbd-8ecd-7b99a81c8899",
      "m1": "ازین پس به خیره مریزید خون",
      "m2": "که بخت جفاپیشگان شد نگون",
      "verse_number": 37
    },
    {
      "id": "16a88589-23db-452f-981b-b146253b7144",
      "m1": "همه آلت لشکر و ساز جنگ",
      "m2": "ببردند نزدیک پور پشنگ",
      "verse_number": 38
    },
    {
      "id": "29ed9564-7a11-43a6-8c55-04a12d2b1caa",
      "m1": "سپهبد منوچهر بنواختشان",
      "m2": "براندازه بر پایگه ساختشان",
      "verse_number": 39
    },
    {
      "id": "fdbe7e41-2534-43eb-8fac-ad2b9657537a",
      "m1": "سوی دژ فرستاد شیروی را",
      "m2": "جهاندیده مرد جهانجوی را",
      "verse_number": 40
    },
    {
      "id": "dc7cd6ef-91e2-4b10-a835-8d32608c09c5",
      "m1": "بفرمود کان خواسته برگرای",
      "m2": "نگه کن همه هر چه یابی به جای",
      "verse_number": 41
    },
    {
      "id": "b84589fe-2f22-4744-bdf2-580afb80f164",
      "m1": "به پیلان گردونکش آن خواسته",
      "m2": "به درگاه شاهآور آراسته",
      "verse_number": 42
    },
    {
      "id": "a7d21e05-1e1d-4bd0-98e2-87232f5fd17b",
      "m1": "بفرمود تا کوس رویین و نای",
      "m2": "زدند و فرو هشت پرده سرای",
      "verse_number": 43
    },
    {
      "id": "c8680edf-0e9e-4f37-b392-b7a4a4cfb8cf",
      "m1": "سپه را ز دریا به هامون کشید",
      "m2": "ز هامون سوی آفریدون کشید",
      "verse_number": 44
    },
    {
      "id": "8e9131d4-bbb7-42a5-81ad-3f252d47c05e",
      "m1": "چو آمد به نزدیک تمیشه باز",
      "m2": "نیا را بدیدار او بد نیاز",
      "verse_number": 45
    },
    {
      "id": "151e913f-41d2-40ab-8ae2-e57d9c748a55",
      "m1": "برآمد ز در نالهٔ کر نای",
      "m2": "سراسر بجنبید لشکر ز جای",
      "verse_number": 46
    },
    {
      "id": "399abbff-a2fd-4045-8591-50090e85ae8f",
      "m1": "همه پشت پیلان ز پیروزه تخت",
      "m2": "بیاراست سالار پیروز بخت",
      "verse_number": 47
    },
    {
      "id": "c31d2533-7a9e-446f-a54b-982b1812579a",
      "m1": "چه با مهد زرین به دیبای چین",
      "m2": "بگوهر بیاراسته همچنین",
      "verse_number": 48
    },
    {
      "id": "2959d034-4a09-4544-8693-aa93c316a979",
      "m1": "چه با گونه گونه درفشان درفش",
      "m2": "جهانی شده سرخ و زرد و بنفش",
      "verse_number": 49
    },
    {
      "id": "dc319fb3-7eb4-4edf-9ea2-622649daab94",
      "m1": "ز دریای گیلان چو ابر سیاه",
      "m2": "دمادم بساری رسید آن سپاه",
      "verse_number": 50
    },
    {
      "id": "67a5a816-1758-4e86-9381-d6f9ef0cc24c",
      "m1": "چو آمد بنزدیک شاه آن سپاه",
      "m2": "فریدون پذیره بیامد براه",
      "verse_number": 51
    },
    {
      "id": "0aa902c9-3c72-4c64-9126-0e3b60e66d84",
      "m1": "همه گیل مردان چو شیر یله",
      "m2": "ابا طوق زرین و مشکین کله",
      "verse_number": 52
    },
    {
      "id": "4c05c8a1-bce2-4a78-86d9-ac49418034f5",
      "m1": "پس پشت شاه اندر ایرانیان",
      "m2": "دلیران و هر یک چو شیر ژیان",
      "verse_number": 53
    },
    {
      "id": "d2710ffa-a2e1-435c-b15f-a3fa5dfee3af",
      "m1": "به پیش سپاه اندرون پیل و شیر",
      "m2": "پس ژنده پیلان یلان دلیر",
      "verse_number": 54
    },
    {
      "id": "713b2f0b-e7ec-4613-810d-a6b92074ce13",
      "m1": "درفش درفشان چو آمد پدید",
      "m2": "سپاه منوچهر صف بر کشید",
      "verse_number": 55
    },
    {
      "id": "8bf80b01-97cc-4943-b048-192c3747118e",
      "m1": "پیاده شد از باره سالار نو",
      "m2": "درخت نوآیین پر از بار نو",
      "verse_number": 56
    },
    {
      "id": "f0f4e25c-a05a-466b-935b-302afceab9d8",
      "m1": "زمین را ببوسید و کرد آفرین",
      "m2": "بران تاج و تخت و کلاه و نگین",
      "verse_number": 57
    },
    {
      "id": "4c6533a7-272e-4b67-8738-2f8bec64979b",
      "m1": "فریدونش فرمود تا برنشست",
      "m2": "ببوسید و بسترد رویش به دست",
      "verse_number": 58
    },
    {
      "id": "07d60664-4155-47f1-b8d8-d10411feeff0",
      "m1": "پس آنگه سوی آسمان کرد روی",
      "m2": "که ای دادگر داور راستگوی",
      "verse_number": 59
    },
    {
      "id": "77a42f3d-b024-4dc9-adbd-6403fac84c09",
      "m1": "تو گفتی که من دادگر داورم",
      "m2": "به سختی ستم دیده را یاورم",
      "verse_number": 60
    },
    {
      "id": "21be6734-566c-4552-93ca-c432448d5528",
      "m1": "همم داد دادی و هم داوری",
      "m2": "همم تاج دادی هم انگشتری",
      "verse_number": 61
    },
    {
      "id": "2c3131e2-48b4-4f1c-904b-0020598690fc",
      "m1": "بفرمود پس تا منوچهر شاه",
      "m2": "نشست از بر تخت زر با کلاه",
      "verse_number": 62
    },
    {
      "id": "1604ed6e-c8e2-4224-92b1-7e6a9541eb9e",
      "m1": "سپهدار شیروی با خواسته",
      "m2": "به درگاه شاه آمد آراسته",
      "verse_number": 63
    },
    {
      "id": "b68d7f60-4af3-4cdf-b6fd-9b2b9c46c61b",
      "m1": "بفرمود پس تا منوچهر شاه",
      "m2": "ببخشید یکسر همه با سپاه",
      "verse_number": 64
    },
    {
      "id": "cea21f6f-2beb-40a4-9cf5-40bb848a3bc0",
      "m1": "چو این کرده شد روز برگشت بخت",
      "m2": "بپژمرد برگ کیانی درخت",
      "verse_number": 65
    },
    {
      "id": "e2c78371-8d2b-4427-b6b8-0261bcced855",
      "m1": "کرانه گزید از بر تاج و گاه",
      "m2": "نهاده بر خود سر هر سه شاه",
      "verse_number": 66
    },
    {
      "id": "cd0d36e0-a382-4e5c-81f9-5b6a728060d9",
      "m1": "پر از خون دل و پر ز گریه دو روی",
      "m2": "چنین تا زمانه سرآمد بروی",
      "verse_number": 67
    },
    {
      "id": "fe2d927e-b190-4d88-883a-50815b4d5f7b",
      "m1": "فریدون شد و نام ازو ماند باز",
      "m2": "برآمد برین روزگار دراز",
      "verse_number": 68
    },
    {
      "id": "10537e51-8b4c-45c6-a6a1-43404ce70812",
      "m1": "همان نیکنامی به و راستی",
      "m2": "که کرد ای پسر سود برکاستی",
      "verse_number": 69
    },
    {
      "id": "1ba2336d-a2f3-4b7d-b7bd-961d1a57dace",
      "m1": "منوچهر بنهاد تاج کیان",
      "m2": "بزنار خونین ببستش میان",
      "verse_number": 70
    },
    {
      "id": "6c184cdc-a6b0-4400-95ed-de83de95a720",
      "m1": "برآیین شاهان یکی دخمه کرد",
      "m2": "چه از زر سرخ و چه از لاژورد",
      "verse_number": 71
    },
    {
      "id": "7b17cbf6-300c-4880-80af-9d677c96f2ea",
      "m1": "نهادند زیر اندرش تخت عاج",
      "m2": "بیاویختند از بر عاج تاج",
      "verse_number": 72
    },
    {
      "id": "34d16d8f-b69d-480b-bf9e-f1d4178f761c",
      "m1": "بپدرود کردنش رفتند پیش",
      "m2": "چنان چون بود رسم آیین و کیش",
      "verse_number": 73
    },
    {
      "id": "35037583-8889-446a-b357-3ad57372f629",
      "m1": "در دخمه بستند بر شهریار",
      "m2": "شد آن ارجمند از جهان زار و خوار",
      "verse_number": 74
    },
    {
      "id": "2a96211d-d205-4513-91c8-569d54622fe2",
      "m1": "جهانا سراسر فسوسی و باد",
      "m2": "بتو نیست مرد خردمند شاد",
      "verse_number": 75
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 75
  },
