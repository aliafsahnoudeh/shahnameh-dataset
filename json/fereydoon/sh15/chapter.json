{
  "id": "296ed003-8d8f-4066-bfc1-f49960ebc2c1",
  "title": "بخش ۱۵",
  "verses": [
    {
      "id": "e0b4a0b0-3ef7-463b-b34f-c0caa80f7f01",
      "m1": "بدان گه که روشن جهان تیره گشت",
      "m2": "طلایه پراگنده بر گرد دشت",
      "verse_number": 1
    },
    {
      "id": "b2b66b7f-adc9-4605-8824-f03d1e3c0c9f",
      "m1": "به پیش سپه قارن رزم زن",
      "m2": "ابا رای زن سرو شاه یمن",
      "verse_number": 2
    },
    {
      "id": "ed77f261-bcf9-4043-8eb1-4cf0b23dee72",
      "m1": "خروشی برآمد ز پیش سپاه",
      "m2": "که ای نامداران و مردان شاه",
      "verse_number": 3
    },
    {
      "id": "fa544ef2-e822-4005-a4d1-72d63f6e2cb8",
      "m1": "بکوشید کاین جنگ آهرمنست",
      "m2": "همان درد و کین است و خون خستنست",
      "verse_number": 4
    },
    {
      "id": "ae8b883e-289e-4603-b9dd-94d96bb5e3b6",
      "m1": "میان بسته دارید و بیدار بید",
      "m2": "همه در پناه جهاندار بید",
      "verse_number": 5
    },
    {
      "id": "039cc705-d781-4717-97f9-9fff7d60f56c",
      "m1": "کسی کو شود کشته زین رزمگاه",
      "m2": "بهشتی بود شسته پاک از گناه",
      "verse_number": 6
    },
    {
      "id": "eb5f0cb3-f37d-4f88-925f-82f85cce2251",
      "m1": "هر آن کس که از لشکر چین و روم",
      "m2": "بریزند خون و بگیرند بوم",
      "verse_number": 7
    },
    {
      "id": "201e0cb8-b505-4e10-990c-9183d956ba8c",
      "m1": "همه نیکنامند تا جاودان",
      "m2": "بمانند با فرهٔ موبدان",
      "verse_number": 8
    },
    {
      "id": "2b28825e-b0d5-4dca-aa52-0a5ac02bea03",
      "m1": "هم از شاه یابند دیهیم و تخت",
      "m2": "ز سالار زر و ز دادار بخت",
      "verse_number": 9
    },
    {
      "id": "b8addf30-0d10-4ceb-826b-e6d7a9d51736",
      "m1": "چو پیدا شود پاک روز سپید",
      "m2": "دو بهره بپیماید از چرخ شید",
      "verse_number": 10
    },
    {
      "id": "eaacb7e9-cf7c-48e8-acd6-75ebaa0fa933",
      "m1": "ببندید یکسر میان یلی",
      "m2": "ابا گرز و با خنجر کابلی",
      "verse_number": 11
    },
    {
      "id": "a9294a05-3b3f-4661-8a06-387dce984940",
      "m1": "بدارید یکسر همه جای خویش",
      "m2": "یکی از دگر پای منهید پیش",
      "verse_number": 12
    },
    {
      "id": "9bde6d63-02a7-4633-9fbd-67924c293c9c",
      "m1": "سران سپه مهتران دلیر",
      "m2": "کشیدند صف پیش سالار شیر",
      "verse_number": 13
    },
    {
      "id": "78eed375-89dc-4050-9e23-25c433f2f443",
      "m1": "به سالار گفتند ما بندهایم",
      "m2": "خود اندر جهان شاه را زندهایم",
      "verse_number": 14
    },
    {
      "id": "c8779abd-9ef9-4ada-b9ee-28068594d0e8",
      "m1": "چو فرمان دهد ما همیدون کنیم",
      "m2": "زمین را ز خون رود جیحون کنیم",
      "verse_number": 15
    },
    {
      "id": "0cffcd30-d790-45a9-beaa-60e8934ca99f",
      "m1": "سوی خیمهٔ خویش باز آمدند",
      "m2": "همه با سری کینه ساز آمدند",
      "verse_number": 16
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 16
  },
  "order_in_parent": 15
}