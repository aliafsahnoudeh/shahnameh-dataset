{
  "id": "c81ab1ae-ec95-4c98-8b3e-4e371ad9abc3",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "8eab47b5-3679-48dd-b5f3-1cfcf3668b06",
      "m1": "سپه چون به نزدیک ایران کشید",
      "m2": "همانگه خبر با فریدون رسید",
      "verse_number": 1
    },
    {
      "id": "47bc8307-6b93-4d91-906b-94be3b52e019",
      "m1": "بفرمود پس تا منوچهر شاه",
      "m2": "ز پهلو به هامون گذارد سپاه",
      "verse_number": 2
    },
    {
      "id": "38149249-54ac-4f5b-92d4-13e160bb0ac0",
      "m1": "یکی داستان زد جهاندیده کی",
      "m2": "که مرد جوان چون بود نیکپی",
      "verse_number": 3
    },
    {
      "id": "8a86159a-35ec-4fb9-b2ea-57033db95b27",
      "m1": "بدام آیدش ناسگالیده میش",
      "m2": "پلنگ از پس پشت و صیاد پیش",
      "verse_number": 4
    },
    {
      "id": "394efc27-9995-448f-a805-14a915b72853",
      "m1": "شکیبایی و هوش و رای و خرد",
      "m2": "هژبر از بیابان به دام آورد",
      "verse_number": 5
    },
    {
      "id": "5537eca3-dfd0-4c8f-80ed-e0da1883814e",
      "m1": "و دیگر ز بد مردم بد کنش",
      "m2": "به فرجام روزی بپیچد تنش",
      "verse_number": 6
    },
    {
      "id": "3ce2da8e-4aa4-4a23-b8e3-15677a7ce58e",
      "m1": "ببادافره آنگه شتابیدمی",
      "m2": "که تفسیده آهن بتابیدمی",
      "verse_number": 7
    },
    {
      "id": "f6b0908e-1fd8-460c-96a1-141d2bda52e9",
      "m1": "چو لشکر منوچهر بر ساده دشت",
      "m2": "برون برد آنجا ببد روز هشت",
      "verse_number": 8
    },
    {
      "id": "ca42abe6-b6b7-48b3-a1db-ed5401829d87",
      "m1": "فریدونش هنگام رفتن بدید",
      "m2": "سخنها به دانش بدو گسترید",
      "verse_number": 9
    },
    {
      "id": "1cde8b05-74c4-477f-8926-e45c3156e7af",
      "m1": "منوچهر گفت ای سرافراز شاه",
      "m2": "کی آید کسی پیش تو کینه خواه",
      "verse_number": 10
    },
    {
      "id": "5849ed86-1693-462f-b2a3-c0d87203d1e5",
      "m1": "مگر بد سگالد بدو روزگار",
      "m2": "به جان و تن خود خورد زینهار",
      "verse_number": 11
    },
    {
      "id": "7f08631e-9e5d-498a-9bf5-90b5ca504352",
      "m1": "من اینک میان را به رومی زره",
      "m2": "ببندم که نگشایم از تن گره",
      "verse_number": 12
    },
    {
      "id": "46a0b564-bea1-448e-a335-344de831bd7f",
      "m1": "به کین جستن از دشت آوردگاه",
      "m2": "برآرم به خورشید گرد سپاه",
      "verse_number": 13
    },
    {
      "id": "6ff82c1d-51f9-4aa5-8557-8863dc118ae7",
      "m1": "ازان انجمن کس ندارم به مرد",
      "m2": "کجا جست یارند با من نبرد",
      "verse_number": 14
    },
    {
      "id": "e4f487f7-6027-435f-aef5-0bff6d6ecc2a",
      "m1": "بفرمود تا قارن رزم جوی",
      "m2": "ز پهلو به دشت اندر آورد روی",
      "verse_number": 15
    },
    {
      "id": "c8b96455-4bdc-4ced-b254-62bdfa913f6e",
      "m1": "سراپردهٔ شاه بیرون کشید",
      "m2": "درفش همایون به هامون کشید",
      "verse_number": 16
    },
    {
      "id": "1ffa3c1f-0ea0-4828-b250-07887fecc934",
      "m1": "همی رفت لشکر گروها گروه",
      "m2": "چو دریا بجوشید هامون و کوه",
      "verse_number": 17
    },
    {
      "id": "ef61b987-131b-4d65-ad1e-b6baa709d983",
      "m1": "چنان تیره شد روز روشن ز گرد",
      "m2": "تو گفتی که خورشید شد لاجورد",
      "verse_number": 18
    },
    {
      "id": "da60fb25-aaca-4132-a9cb-0441eab3be3c",
      "m1": "ز کشور برآمد سراسر خروش",
      "m2": "همی کرشدی مردم تیزگوش",
      "verse_number": 19
    },
    {
      "id": "613cc06e-13d3-48d9-891d-c5b8c032339c",
      "m1": "خروشیدن تازی اسپان ز دشت",
      "m2": "ز بانگ تبیره همی برگذشت",
      "verse_number": 20
    },
    {
      "id": "0d7d3d4c-a4ed-48c2-a419-0ab68c5d142c",
      "m1": "ز لشگر گه پهلوان تا دو میل",
      "m2": "کشیده دو رویه رده ژندهپیل",
      "verse_number": 21
    },
    {
      "id": "90839ea2-d945-4585-a3c6-e2ead56bed27",
      "m1": "ازان شصت بر پشتشان تخت زر",
      "m2": "به زر اندرون چند گونه گهر",
      "verse_number": 22
    },
    {
      "id": "69522d23-3784-4068-aa2d-650e4f7f7487",
      "m1": "چو سیصد بنه برنهادند بار",
      "m2": "چو سیصد همان از در کارزار",
      "verse_number": 23
    },
    {
      "id": "54a94bab-9954-4bbc-9c75-66fb817531dc",
      "m1": "همه زیر برگستوان اندرون",
      "m2": "نبدشان جز از چشم ز آهن برون",
      "verse_number": 24
    },
    {
      "id": "ef07f054-9de3-4133-962c-645946f45122",
      "m1": "سراپردهٔ شاه بیرون زدند",
      "m2": "ز تمیشه لشکر بهامون زدند",
      "verse_number": 25
    },
    {
      "id": "95302406-287d-499f-9eb4-3b726813f6ad",
      "m1": "سپهدار چون قارن کینهدار",
      "m2": "سواران جنگی چو سیصدهزار",
      "verse_number": 26
    },
    {
      "id": "48bf237b-e0f5-462f-9c14-a40aae858f5f",
      "m1": "همه نامداران جوشنوران",
      "m2": "برفتند با گرزهای گران",
      "verse_number": 27
    },
    {
      "id": "d78ff25c-c708-4c9f-a013-1cbe3b0a496a",
      "m1": "دلیران یکایک چو شیر ژیان",
      "m2": "همه بسته بر کین ایرج میان",
      "verse_number": 28
    },
    {
      "id": "e498c7a8-1067-4cd6-abc2-95a8416bd8ad",
      "m1": "به پیش اندرون کاویانی درفش",
      "m2": "به چنگ اندرون تیغهای بنفش",
      "verse_number": 29
    },
    {
      "id": "afe1623c-d1cc-41cb-af35-d2ea7b5d7c42",
      "m1": "منوچهر با قارن پیلتن",
      "m2": "برون آمد از بیشهٔ نارون",
      "verse_number": 30
    },
    {
      "id": "7d6469f7-ecb4-4113-8a8f-ac41aa745d75",
      "m1": "بیامد به پیش سپه برگذشت",
      "m2": "بیاراست لشکر بران پهندشت",
      "verse_number": 31
    },
    {
      "id": "16c72545-750b-4072-9c74-d02741ccea33",
      "m1": "چپ لشکرش را بگرشاسپ داد",
      "m2": "ابر میمنه سام یل با قباد",
      "verse_number": 32
    },
    {
      "id": "9f7b3b41-60db-4603-b154-ca9e332b3dfd",
      "m1": "رده بر کشیده ز هر سو سپاه",
      "m2": "منوچهر با سرو در قلبگاه",
      "verse_number": 33
    },
    {
      "id": "99af6b44-aeac-4990-84ed-083555bf8db7",
      "m1": "همی تافت چون مه میان گروه",
      "m2": "نبود ایچ پیدا ز افراز کوه",
      "verse_number": 34
    },
    {
      "id": "91d002d8-ffe7-4e3a-bfc7-4367a5433958",
      "m1": "سپه کش چو قارن مبارز چو سام",
      "m2": "سپه برکشیده حسام از نیام",
      "verse_number": 35
    },
    {
      "id": "b30d7235-9f5c-445a-9757-bf8a39d70d37",
      "m1": "طلایه به پیش اندرون چون قباد",
      "m2": "کمین ور چو گرد تلیمان نژاد",
      "verse_number": 36
    },
    {
      "id": "25f569b6-537c-4d64-ab7f-91ed36acefac",
      "m1": "یکی لشکر آراسته چون عروس",
      "m2": "به شیران جنگی و آوای کوس",
      "verse_number": 37
    },
    {
      "id": "cae422aa-ba13-40ce-bd86-120c9d6ff39a",
      "m1": "به تور و به سلم آگهی تاختند",
      "m2": "که ایرانیان جنگ را ساختند",
      "verse_number": 38
    },
    {
      "id": "352df5df-80dd-4d7f-a1ba-77251f6a8c63",
      "m1": "ز بیشه بهامون کشیدند صف",
      "m2": "ز خون جگر بر لب آورده کف",
      "verse_number": 39
    },
    {
      "id": "6e0a1abe-43e7-44f0-a5a2-453a87b3253a",
      "m1": "دو خونی همان با سپاهی گران",
      "m2": "برفتند آگنده از کین سران",
      "verse_number": 40
    },
    {
      "id": "9e5ee564-37ff-488e-b816-9837fc49c6e6",
      "m1": "کشیدند لشکر به دشت نبرد",
      "m2": "الانان دژ را پس پشت کرد",
      "verse_number": 41
    },
    {
      "id": "5f3c2178-9e69-4cc9-a131-ad50250e9826",
      "m1": "یکایک طلایه بیامد قباد",
      "m2": "چو تور آگهی یافت آمد چو باد",
      "verse_number": 42
    },
    {
      "id": "06f94fd0-1563-421b-ab81-7f16f18701e4",
      "m1": "بدو گفت نزد منوچهر شو",
      "m2": "بگویش که ای بیپدر شاه نو",
      "verse_number": 43
    },
    {
      "id": "1c7ca9ed-b9a3-4a4c-8653-4db999bb85a6",
      "m1": "اگر دختر آمد ز ایرج نژاد",
      "m2": "ترا تیغ و کوپال و جوشن که داد",
      "verse_number": 44
    },
    {
      "id": "e7dfe5a1-8725-47a1-8e84-a2643073e84c",
      "m1": "بدو گفت آری گزارم پیام",
      "m2": "بدین سان که گفتی و بردی تو نام",
      "verse_number": 45
    },
    {
      "id": "41e80e84-32bc-439c-ad5b-58670510586e",
      "m1": "ولیکن گر اندیشه گردد دراز",
      "m2": "خرد با دل تو نشیند براز",
      "verse_number": 46
    },
    {
      "id": "041b3062-df25-4eae-9428-ad353fb1340d",
      "m1": "بدانی که کاریت هولست پیش",
      "m2": "بترسی ازین خام گفتار خویش",
      "verse_number": 47
    },
    {
      "id": "c005a64e-22be-4d3b-a333-50f3d5e58d7e",
      "m1": "اگر بر شما دام و دد روز و شب",
      "m2": "همی گریدی نیستی بس عجب",
      "verse_number": 48
    },
    {
      "id": "7e8c8e3f-5d5b-4476-b94a-66d7f017c53f",
      "m1": "که از بیشهٔ نارون تا بچین",
      "m2": "سواران جنگند و مردان کین",
      "verse_number": 49
    },
    {
      "id": "5b843a92-4d83-43fd-a609-9e3f6323fbdc",
      "m1": "درفشیدن تیغهای بنفش",
      "m2": "چو بینید باکاویانی درفش",
      "verse_number": 50
    },
    {
      "id": "2a2d1861-d8b1-4a77-91b2-6624da4e2e74",
      "m1": "بدرد دل و مغزتان از نهیب",
      "m2": "بلندی ندانید باز از نشیب",
      "verse_number": 51
    },
    {
      "id": "8379b8a1-1228-41e0-ade6-a5680411ca87",
      "m1": "قباد آمد آنگه به نزدیک شاه",
      "m2": "بگفت آنچه بشنید ازان رزم خواه",
      "verse_number": 52
    },
    {
      "id": "ac8f8d29-2f9e-4422-b870-38792996053a",
      "m1": "منوچهر خندید و گفت آنگهی",
      "m2": "که چونین نگوید مگر ابلهی",
      "verse_number": 53
    },
    {
      "id": "ff680d68-92d3-43b8-804e-74950d356ed8",
      "m1": "سپاس از جهاندار هر دو جهان",
      "m2": "شناسندهٔ آشکار و نهان",
      "verse_number": 54
    },
    {
      "id": "8bf254c9-5ce7-4dbf-b129-e9355c985912",
      "m1": "که داند که ایرج نیای منست",
      "m2": "فریدون فرخ گوای منست",
      "verse_number": 55
    },
    {
      "id": "fbd7a574-4a68-414e-afad-b1a2fe0e64c3",
      "m1": "کنون گر بجنگ اندر آریم سر",
      "m2": "شود آشکارا نژاد و گهر",
      "verse_number": 56
    },
    {
      "id": "0e1acc00-f3ed-4413-b3b7-b36836612a58",
      "m1": "به زور خداوند خورشید و ماه",
      "m2": "که چندان نمانم ورا دستگاه",
      "verse_number": 57
    },
    {
      "id": "235fe842-6a97-429f-a82b-0db52acbb9a8",
      "m1": "که بر هم زند چشم زیر و زبر",
      "m2": "بریده به لشکر نمایمش سر",
      "verse_number": 58
    },
    {
      "id": "f2cb854c-09f9-4cc9-86a1-5a4350e2f526",
      "m1": "بفرمود تا خوان بیاراستند",
      "m2": "نشستنگه رود و میخواستند",
      "verse_number": 59
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 59
  }
}