{
  "id": "44fb57d7-05b2-49f9-af23-b6a0a52b0fef",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "b1c851b7-5546-4442-bb82-3744cccb2bc5",
      "m1": "غمی بد دل شاه هاماوران",
      "m2": "ز هرگونهای چاره جست اندران",
      "verse_number": 1
    },
    {
      "id": "deed3b5a-ba20-4c0e-a5e6-f198b750c62e",
      "m1": "چو یک هفته بگذشت هشتم پگاه",
      "m2": "فرستاده آمد به نزدیک شاه",
      "verse_number": 2
    },
    {
      "id": "a2ff71c8-2bb4-4914-a385-eba9c74d78f8",
      "m1": "که گر شاه بیند که مهمان خویش",
      "m2": "بیاید خرامان به ایوان خویش",
      "verse_number": 3
    },
    {
      "id": "701e8b55-6e3c-48d6-8fa6-af4e5bc216be",
      "m1": "شود شهر هاماوران ارجمند",
      "m2": "چو بینند رخشندهگاه بلند",
      "verse_number": 4
    },
    {
      "id": "579624f3-85b3-4226-826d-2fef8b0c3d22",
      "m1": "بدینگونه با او همی چاره جست",
      "m2": "نهان بند او بود رایش درست",
      "verse_number": 5
    },
    {
      "id": "ec42b4d2-e2e3-444a-86cb-0ba6dbd2b539",
      "m1": "مگر شهر و دختر بماند بدوی",
      "m2": "نباشدش بر سر یکی باژجوی",
      "verse_number": 6
    },
    {
      "id": "af8f734c-c2f1-4049-9efc-88ffef6bfd10",
      "m1": "بدانست سودابه رای پدر",
      "m2": "که با سور پرخاش دارد به سر",
      "verse_number": 7
    },
    {
      "id": "31fd74b7-2d2f-4390-ad18-a6d8e8275259",
      "m1": "به کاووس کی گفت کاین رای نیست",
      "m2": "ترا خود به هاماوران جای نیست",
      "verse_number": 8
    },
    {
      "id": "7057983f-a284-49f5-a02d-bc4bf9f94532",
      "m1": "ترا بیبهانه به چنگ آورند",
      "m2": "نباید که با سور جنگ آورند",
      "verse_number": 9
    },
    {
      "id": "bd6f6899-a1d9-476a-9e81-4a74006787ab",
      "m1": "ز بهر منست این همه گفتوگوی",
      "m2": "ترا زین شدن انده آید بهروی",
      "verse_number": 10
    },
    {
      "id": "1a50c65d-d7c1-45a1-9ff7-ef613bde1d5b",
      "m1": "ز سودابه گفتار باور نکرد",
      "m2": "نیامدش زیشان کسی را بمرد",
      "verse_number": 11
    },
    {
      "id": "b8ba8d09-9b29-4285-8da6-be271fd59106",
      "m1": "بشد با دلیران و کندآوران",
      "m2": "به مهمانی شاه هاماوران",
      "verse_number": 12
    },
    {
      "id": "850bed65-b2db-4ad3-860d-2c632a41d6ea",
      "m1": "یکی شهر بد شاه را شاهه نام",
      "m2": "همه از در جشن و سور و خرام",
      "verse_number": 13
    },
    {
      "id": "5036309a-e6c3-4c60-a74e-6245bb8af768",
      "m1": "بدان شهر بودش سرای و نشست",
      "m2": "همه شهر سرتاسر آذین ببست",
      "verse_number": 14
    },
    {
      "id": "43550c8a-f5b4-48c2-8d2b-59ab0ce8796e",
      "m1": "چو در شاهه شد شاه گردنفراز",
      "m2": "همه شهر بردند پیشش نماز",
      "verse_number": 15
    },
    {
      "id": "f6ac95e9-6927-4028-91d6-b8ea54a7e260",
      "m1": "همه گوهر و زعفران ریختند",
      "m2": "به دینار و عنبر برآمیختند",
      "verse_number": 16
    },
    {
      "id": "dda8ad55-c584-4b8f-8e4b-85a5221cde0e",
      "m1": "به شهر اندر آوای رود و سرود",
      "m2": "به هم برکشیدند چون تار و پود",
      "verse_number": 17
    },
    {
      "id": "959ef877-4e60-43a3-add5-eddbde54c1b0",
      "m1": "چو دیدش سپهدار هاماوران",
      "m2": "پیاده شدش پیش با مهتران",
      "verse_number": 18
    },
    {
      "id": "91e9fc7b-ae6d-44f2-94d4-2e009ceb9999",
      "m1": "ز ایوان سالار تا پیش در",
      "m2": "همه در و یاقوت بارید و زر",
      "verse_number": 19
    },
    {
      "id": "d67c7e93-ddd2-4a78-b333-906c46383352",
      "m1": "به زرین طبقها فروریختند",
      "m2": "به سر مشک و عنبر همی بیختند",
      "verse_number": 20
    },
    {
      "id": "f62851ca-8503-4c6c-b7f1-86fe16b6b6de",
      "m1": "به کاخ اندرون تخت زرین نهاد",
      "m2": "نشست از بر تخت کاووس شاد",
      "verse_number": 21
    },
    {
      "id": "3edbe0b6-ffe5-49c7-ad99-ef783f4b4b9c",
      "m1": "همی بود یک هفته با می به دست",
      "m2": "خوش و خرم آمدش جای نشست",
      "verse_number": 22
    },
    {
      "id": "1d117393-708e-4855-a22c-8e9c1bd16538",
      "m1": "شب و روز بر پیش چون کهتران",
      "m2": "میان بسته بد شاه هاماوران",
      "verse_number": 23
    },
    {
      "id": "bdd8440f-da02-4b06-a3fc-81c60b733df7",
      "m1": "ببسته همه لشکرش را میان",
      "m2": "پرستنده بر پیش ایرانیان",
      "verse_number": 24
    },
    {
      "id": "694078da-f1e3-4ef8-8788-ccc04ebabc44",
      "m1": "بدینگونه تا یکسر ایمن شدند",
      "m2": "ز چون و چرا و نهیب و گزند",
      "verse_number": 25
    },
    {
      "id": "3d992cef-01b3-4c8d-ba5a-361e0f94210e",
      "m1": "همه گفته بودند و آراسته",
      "m2": "سگالیده از جای برخاسته",
      "verse_number": 26
    },
    {
      "id": "1375ff37-830d-4a7a-bbcb-3e9dfbd3ce03",
      "m1": "ز بربر برینگونه آگه شدند",
      "m2": "سگالش چنین بود همره شدند",
      "verse_number": 27
    },
    {
      "id": "bc6a1d16-5cf0-4e13-b599-43ca1d0f9606",
      "m1": "شبی بانگ بوق آمد و تاختن",
      "m2": "کسی را نبد آرزو ساختن",
      "verse_number": 28
    },
    {
      "id": "075400e8-06f8-4de3-9351-f42dd2e93d1c",
      "m1": "ز بربرستان چون بیامد سپاه",
      "m2": "به هاماوران شاددل گشت شاه",
      "verse_number": 29
    },
    {
      "id": "1414ea75-c7d9-4157-9e8b-18fad4fee870",
      "m1": "گرفتند ناگاه کاووس را",
      "m2": "چو گودرز و چون گیو و چون طوس را",
      "verse_number": 30
    },
    {
      "id": "8dc77a19-c73e-4b8d-be05-3f8b12c728dc",
      "m1": "چو گوید درین مردم پیشبین",
      "m2": "چه دانی تو ای کاردان اندرین",
      "verse_number": 31
    },
    {
      "id": "57872e0e-62a2-4a8a-9c53-0611bf831219",
      "m1": "چو پیوستهٔ خون نباشد کسی",
      "m2": "نباید برو بودن ایمن بسی",
      "verse_number": 32
    },
    {
      "id": "d45e6f2f-af4c-424e-9305-57621143f13f",
      "m1": "بود نیز پیوسته خونی که مهر",
      "m2": "ببرد ز تو تا بگرددت چهر",
      "verse_number": 33
    },
    {
      "id": "508541d9-76af-487f-af3f-f4dd192e1f59",
      "m1": "چو مهر کسی را بخواهی ستود",
      "m2": "بباید به سود و زیان آزمود",
      "verse_number": 34
    },
    {
      "id": "0084a3fd-b0f4-4370-bac8-4205d9bdca4f",
      "m1": "پسر گر به جاه از تو برتر شود",
      "m2": "هم از رشک مهر تو لاغر شود",
      "verse_number": 35
    },
    {
      "id": "ce5a075d-3d7d-4529-8b3a-2f0444539843",
      "m1": "چنین است گیهان ناپاک رای",
      "m2": "به هر باد خیره بجنبد ز جای",
      "verse_number": 36
    },
    {
      "id": "12b30bfb-6433-4052-81c2-7ad062aca0be",
      "m1": "چو کاووس بر خیرگی بسته شد",
      "m2": "به هاماوران رای پیوسته شد",
      "verse_number": 37
    },
    {
      "id": "d7c11bd2-f716-4450-95cb-d15a34424ba9",
      "m1": "یکی کوه بودش سر اندر سحاب",
      "m2": "برآوردهٔ ایزد از قعر آب",
      "verse_number": 38
    },
    {
      "id": "82d2ddf1-19f7-4b7a-9b34-ded01f1d17d0",
      "m1": "یکی دژ برآورده از کوهسار",
      "m2": "تو گفتی سپهرستش اندر کنار",
      "verse_number": 39
    },
    {
      "id": "83db4325-cf78-4c94-a9f8-4eced350495e",
      "m1": "بدان دژ فرستاد کاووس را",
      "m2": "همان گیو و گودرز و هم طوس را",
      "verse_number": 40
    },
    {
      "id": "09d7b5bb-dc18-4727-8532-69bca2426374",
      "m1": "همان مهتران دگر را به بند",
      "m2": "ابا شاه کاووس در دژ فگند",
      "verse_number": 41
    },
    {
      "id": "a1000e18-31f7-44ac-b8c8-e425725b5c75",
      "m1": "ز گردان نگهبان دژ شد هزار",
      "m2": "همه نامداران خنجرگذار",
      "verse_number": 42
    },
    {
      "id": "8d37d72e-8d7f-42a6-9f81-7b0debe30963",
      "m1": "سراپردهٔ او به تاراج داد",
      "m2": "به پرمایگان بدره و تاج داد",
      "verse_number": 43
    },
    {
      "id": "3bdf486b-4a65-4e6b-a037-f98703c070af",
      "m1": "برفتند پوشیده رویان دو خیل",
      "m2": "عماری یکی درمیانش جلیل",
      "verse_number": 44
    },
    {
      "id": "ac7da565-5401-4c39-bb6a-be493b921ef3",
      "m1": "که سودابه را باز جای آورند",
      "m2": "سراپرده را زیر پای آورند",
      "verse_number": 45
    },
    {
      "id": "8baa045d-7eb7-4b7c-ae27-af88cb9cda46",
      "m1": "چو سودابه پوشیدگان را بدید",
      "m2": "ز بر جامهٔ خسروی بردرید",
      "verse_number": 46
    },
    {
      "id": "fedc0c9b-583e-4161-99ef-d72538226014",
      "m1": "به مشکین کمند اندرآویخت چنگ",
      "m2": "به فندق گلان را به خون داد رنگ",
      "verse_number": 47
    },
    {
      "id": "e017ff22-d485-4bfe-a55b-8d948ae93bd9",
      "m1": "بدیشان چنین گفت کاین کارکرد",
      "m2": "ستوده ندارند مردان مرد",
      "verse_number": 48
    },
    {
      "id": "4a4d8e2d-826e-43c2-9f45-915c4702928e",
      "m1": "چرا روز جنگش نکردند بند",
      "m2": "که جامهاش زره بود و تختش سمند",
      "verse_number": 49
    },
    {
      "id": "86157eb4-b9e1-49a6-ae07-5ce5f3871cbc",
      "m1": "سپهدار چون گیو و گودرز و طوس",
      "m2": "بدرید دلتان ز آوای کوس",
      "verse_number": 50
    },
    {
      "id": "c3d63f2a-ef4f-4747-98c0-fe9f82c3c57b",
      "m1": "همی تخت زرین کمینگه کنید",
      "m2": "ز پیوستگی دست کوته کنید",
      "verse_number": 51
    },
    {
      "id": "caef0701-17a4-4099-a51a-42e6b0ddd7b9",
      "m1": "فرستادگان را سگان کرد نام",
      "m2": "همی ریخت خونابه بر گل مدام",
      "verse_number": 52
    },
    {
      "id": "7877ae43-b937-4444-a06d-f4faa7b38712",
      "m1": "جدایی نخواهم ز کاووس گفت",
      "m2": "وگرچه لحد باشد او را نهفت",
      "verse_number": 53
    },
    {
      "id": "070d1b60-e8bb-4976-927d-cbe8deb492c8",
      "m1": "چو کاووس را بند باید کشید",
      "m2": "مرا بیگنه سر بباید برید",
      "verse_number": 54
    },
    {
      "id": "f7603b92-047d-4651-b48b-8d9126c04ab5",
      "m1": "بگفتند گفتار او با پدر",
      "m2": "پر از کین شدش سر پر از خون جگر",
      "verse_number": 55
    },
    {
      "id": "1423f469-ca6e-4df2-90f1-a573b79ca920",
      "m1": "به حصنش فرستاد نزدیک شوی",
      "m2": "جگر خسته از غم به خون شسته روی",
      "verse_number": 56
    },
    {
      "id": "ac0f18e7-608c-4286-9f67-632e90632caf",
      "m1": "نشستن به یک خانه با شهریار",
      "m2": "پرستنده او بود و هم غمگسار",
      "verse_number": 57
    },
    {
      "id": "b926939b-135b-4a2f-92df-45cfebd25e41",
      "m1": "چو بسته شد آن شاه دیهیمجوی",
      "m2": "سپاهش به ایران نهادند روی",
      "verse_number": 58
    },
    {
      "id": "da8f9e03-0393-452b-b276-28a60edde71c",
      "m1": "پراگنده شد در جهان آگهی",
      "m2": "که گم شد ز پالیز سرو سهی",
      "verse_number": 59
    },
    {
      "id": "66570288-c9a0-4212-83f3-f1322aa22c1f",
      "m1": "چو بر تخت زرین ندیدند شاه",
      "m2": "بجستن گرفتند هر کس کلاه",
      "verse_number": 60
    },
    {
      "id": "66c61f2e-2754-4d19-9ae8-243da18f9285",
      "m1": "ز ترکان و از دشت نیزهوران",
      "m2": "ز هر سو بیامد سپاهی گران",
      "verse_number": 61
    },
    {
      "id": "5b78792e-7c78-4d12-962d-e87c2bf6ee83",
      "m1": "گران لشکری ساخت افراسیاب",
      "m2": "برآمد سر از خورد و آرام و خواب",
      "verse_number": 62
    },
    {
      "id": "df4d21bc-6520-4f81-b40b-e468f2c6eb58",
      "m1": "از ایران برآمد ز هر سو خروش",
      "m2": "شد آرام گیتی پر از جنگوجوش",
      "verse_number": 63
    },
    {
      "id": "70cc2271-0898-4185-9e42-5c9583d6e237",
      "m1": "برآشفت افراسیاب آن زمان",
      "m2": "برآویخت با لشکر تازیان",
      "verse_number": 64
    },
    {
      "id": "c7e1261e-de18-4073-a378-635c8a97fced",
      "m1": "به جنگ اندرون بود لشکر سه ماه",
      "m2": "بدادند سرها ز بهر کلاه",
      "verse_number": 65
    },
    {
      "id": "c880b918-2311-4c6e-ab16-379d4ebbac90",
      "m1": "چنین است رسم سرای سپنج",
      "m2": "گهی ناز و نوش و گهی درد و رنج",
      "verse_number": 66
    },
    {
      "id": "f70d97ea-a723-4d94-9c57-d3a61e934c30",
      "m1": "سرانجام نیک و بدش بگذرد",
      "m2": "شکارست مرگش همی بشکرد",
      "verse_number": 67
    },
    {
      "id": "945cc1f0-0909-433b-b9bf-269d16cde706",
      "m1": "شکست آمد از ترک بر تازیان",
      "m2": "ز بهر فزونی سرآمد زیان",
      "verse_number": 68
    },
    {
      "id": "ebc76020-7cc6-4067-bb99-8667f1315a82",
      "m1": "سپاه اندر ایران پراگنده شد",
      "m2": "زن و مرد و کودک همه بنده شد",
      "verse_number": 69
    },
    {
      "id": "7e0a7861-f8d2-4cfb-a4d8-9ed56d2352e0",
      "m1": "همه در گرفتند ز ایران پناه",
      "m2": "به ایرانیان گشت گیتی سیاه",
      "verse_number": 70
    },
    {
      "id": "559e631b-b3ba-42bd-ae3e-4a7891eefa6c",
      "m1": "دو بهره سوی زاولستان شدند",
      "m2": "به خواهش بر پور دستان شدند",
      "verse_number": 71
    },
    {
      "id": "0e34ade5-702d-4bb0-ae18-a82955c317cd",
      "m1": "که ما را ز بدها تو باشی پناه",
      "m2": "چو گم شد سر تاج کاووس شاه",
      "verse_number": 72
    },
    {
      "id": "6a60c610-94f5-46fd-bb50-ad24e0ab04a1",
      "m1": "دریغست ایران که ویران شود",
      "m2": "کنام پلنگان و شیران شود",
      "verse_number": 73
    },
    {
      "id": "b08c1522-6cf7-47f1-9f7c-1b39e7961d20",
      "m1": "همه جای جنگی سواران بدی",
      "m2": "نشستنگه شهریاران بدی",
      "verse_number": 74
    },
    {
      "id": "e8c907c2-c297-43bf-9e56-3d8872a3e4b9",
      "m1": "کنون جای سختی و رنج و بلاست",
      "m2": "نشستنگه تیزچنگ اژدهاست",
      "verse_number": 75
    },
    {
      "id": "84b4dda9-44eb-4f6d-88ee-6e81ad5657da",
      "m1": "کسی کز پلنگان بخوردست شیر",
      "m2": "بدین رنج ما را بود دستگیر",
      "verse_number": 76
    },
    {
      "id": "7707ca9e-bc50-4290-a27b-9161202b6e08",
      "m1": "کنون چارهای باید انداختن",
      "m2": "دل خویش ازین رنج پرداختن",
      "verse_number": 77
    },
    {
      "id": "58202914-3172-46e0-9715-1eccfdba3f96",
      "m1": "ببارید رستم ز چشم آب زرد",
      "m2": "دلش گشت پرخون و جان پر ز درد",
      "verse_number": 78
    },
    {
      "id": "48208433-581e-484d-b244-eaa84f60e952",
      "m1": "چنین داد پاسخ که من با سپاه",
      "m2": "میان بستهام جنگ را کینه خواه",
      "verse_number": 79
    },
    {
      "id": "2b815644-5382-4470-8ee1-3ac22d64fb0c",
      "m1": "چو یابم ز کاووس شاه آگهی",
      "m2": "کنم شهر ایران ز ترکان تهی",
      "verse_number": 80
    },
    {
      "id": "56bf96c9-4398-417b-8fda-90262da7707e",
      "m1": "پس آگاهی آمد ز کاووس شاه",
      "m2": "ز بند کمینگاه و کار سپاه",
      "verse_number": 81
    },
    {
      "id": "17a92c88-429a-4762-9a48-b3e7a4eba507",
      "m1": "سپه را یکایک ز کابل بخواند",
      "m2": "میان بسته بر جنگ و لشکر براند",
      "verse_number": 82
    }
  ],
