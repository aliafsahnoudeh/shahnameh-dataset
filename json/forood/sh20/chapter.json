{
  "id": "9f4db046-df6e-462d-a450-0a92e6e72d43",
  "title": "بخش ۲۰",
  "verses": [
    {
      "id": "0d25c060-15a2-4905-b8e8-e768d6f035d1",
      "m1": "دبیر خردمند را پیش خواند",
      "m2": "دل آگنده بودش ز غم برفشاند",
      "verse_number": 1
    },
    {
      "id": "ab2c543d-ba05-4c98-93bd-acf0bc8bc97e",
      "m1": "یکی نامه بنوشت پر آب چشم",
      "m2": "ز بهر برادر پر از درد و خشم",
      "verse_number": 2
    },
    {
      "id": "af229177-bcc3-4632-baef-8cac1ce134cf",
      "m1": "بسوی فریبرز کاوس شاه",
      "m2": "یکی سوی پرمایگان سپاه",
      "verse_number": 3
    },
    {
      "id": "14db2da7-5386-41ee-91b1-4f224f306711",
      "m1": "سر نامه بود از نخست آفرین",
      "m2": "چنانچون بود رسم آیین و دین",
      "verse_number": 4
    },
    {
      "id": "09207b73-adc0-4692-acb3-b352c9e3dbd6",
      "m1": "بنام خداوند خورشید و ماه",
      "m2": "کجا داد بر نیکوی دستگاه",
      "verse_number": 5
    },
    {
      "id": "948e210a-5a94-47bd-974c-ca0c6d08831d",
      "m1": "جهان و مکان و زمان آفرید",
      "m2": "پی مور و پیل گران آفرید",
      "verse_number": 6
    },
    {
      "id": "faedd97a-9263-4de4-a346-6f0dbe9601ca",
      "m1": "ازویست پیروزی و زو شکیب",
      "m2": "بنیک و ببد زو رسد کام و زیب",
      "verse_number": 7
    },
    {
      "id": "fc2a96d6-ba73-407f-bbcc-269c6d8e7449",
      "m1": "خرد داد و جان و تن زورمند",
      "m2": "بزرگی و دیهیم و تخت بلند",
      "verse_number": 8
    },
    {
      "id": "d3c7f505-37d0-4bab-8716-350bfc359ed7",
      "m1": "رهایی نیابد سر از بند اوی",
      "m2": "یکی را همه فر و اورند اوی",
      "verse_number": 9
    },
    {
      "id": "e250dd13-0c61-476b-9d92-d180f2360a00",
      "m1": "یکی را دگر شوربختی دهد",
      "m2": "نیاز و غم و درد و سختی دهد",
      "verse_number": 10
    },
    {
      "id": "e0878013-7505-4707-8b22-275b76511951",
      "m1": "ز رخشنده خورشید تا تیره خاک",
      "m2": "همه داد بینم ز یزدان پاک",
      "verse_number": 11
    },
    {
      "id": "3d0e7371-eef2-4f1c-9140-68754cb3c3ae",
      "m1": "بشد طوس با کاویانی درفش",
      "m2": "ز لشکر چهل مرد زرینه کفش",
      "verse_number": 12
    },
    {
      "id": "b4f9dda0-023f-4bd9-a1d5-5a361db29439",
      "m1": "بتوران فرستادمش با سپاه",
      "m2": "برادر شد از کین نخستین تباه",
      "verse_number": 13
    },
    {
      "id": "47d2ba53-3750-44c9-bca6-e464f625fbbb",
      "m1": "بایران چنو هیچ مهتر مباد",
      "m2": "وزین گونه سالار لشکر مباد",
      "verse_number": 14
    },
    {
      "id": "374f8ae1-f9ce-4499-9755-4daab9cd1ab8",
      "m1": "دریغا برادر فرود جوان",
      "m2": "سر نامداران و پشت گوان",
      "verse_number": 15
    },
    {
      "id": "c55335f4-0ae1-4105-b496-7ffdbfcac625",
      "m1": "ز کین پدر زار و گریان بدم",
      "m2": "بران درد یک چند بریان بدم",
      "verse_number": 16
    },
    {
      "id": "036f4485-c8c6-4083-8ee6-5d667c5ce3d7",
      "m1": "کنون بر برادر بباید گریست",
      "m2": "ندانم مرا دشمن و دوست کیست",
      "verse_number": 17
    },
    {
      "id": "3ccef6dc-032f-458d-b26a-d55322bb98aa",
      "m1": "مرو گفتم او را براه چرم",
      "m2": "مزن بر کلات و سپدکوه دم",
      "verse_number": 18
    },
    {
      "id": "ee6d5a2e-c08e-4531-90fe-274ee35733e0",
      "m1": "بران ره فرودست و با لشکرست",
      "m2": "همان کی نژاد است و کنداور است",
      "verse_number": 19
    },
    {
      "id": "46714a74-784a-4a9e-ad41-3006c8f13b20",
      "m1": "نداند که این لشکر از بن کیند",
      "m2": "از ایران سپاهند گر خود چیند",
      "verse_number": 20
    },
    {
      "id": "a9705225-3f4c-4427-be54-ab13c59186e6",
      "m1": "ازان کوه جنگ آورد بیگمان",
      "m2": "فراوان سران را سرآرد زمان",
      "verse_number": 21
    },
    {
      "id": "167d4d3d-e4cc-40e8-92e2-faa432cf8a25",
      "m1": "دریغ آنچنان گرد خسرونژاد",
      "m2": "که طوس فرومایه دادش بباد",
      "verse_number": 22
    },
    {
      "id": "da5531ae-b35b-4171-9556-73623de593de",
      "m1": "اگر پیش از این او سپهبد بدست",
      "m2": "ز کاوس شاه اختر بد بدست",
      "verse_number": 23
    },
    {
      "id": "33d4fc1a-a514-483a-b8c0-bcd43cd2e13d",
      "m1": "برزم اندرون نیز خواب آیدش",
      "m2": "چو بی مینشیند شتاب آیدش",
      "verse_number": 24
    },
    {
      "id": "5e9ec360-4f09-494c-9cc5-ab1f6aaf5be5",
      "m1": "هنرها همه هست نزدیک اوی",
      "m2": "مبادا چنان جان تاریک اوی",
      "verse_number": 25
    },
    {
      "id": "160d0d27-aef0-488e-870f-f86eaaf16c23",
      "m1": "چو این نامه خوانی هماندر شتاب",
      "m2": "ز دل دور کن خورد آرام و خواب",
      "verse_number": 26
    },
    {
      "id": "76da855a-1d71-466a-98b9-fc0ca4d1e383",
      "m1": "سبک طوس را بازگردان بجای",
      "m2": "ز فرمان مگرد و مزن هیچ رای",
      "verse_number": 27
    },
    {
      "id": "dae5cfb9-8de1-46a4-91a8-2f80758ec908",
      "m1": "سپهدار و سالار زرینه کفش",
      "m2": "تو می باش با کاویانی درفش",
      "verse_number": 28
    },
    {
      "id": "a112fd19-5ff4-44e4-8187-969268064eb3",
      "m1": "سرافراز گودرز ازان انجمن",
      "m2": "بهر کار باشد ترا رای زن",
      "verse_number": 29
    },
    {
      "id": "d5a3f60e-53b6-488b-902e-99428267bb14",
      "m1": "مکن هیچ در جنگ جستن شتاب",
      "m2": "ز می دور باش و مپیمای خواب",
      "verse_number": 30
    },
    {
      "id": "7a849792-26a2-4b23-98dd-0ce79631bb22",
      "m1": "بتندی مجو ایچ رزم از نخست",
      "m2": "همی باش تا خسته گردد درست",
      "verse_number": 31
    },
    {
      "id": "633c6429-ca0b-460e-9022-47e33103776d",
      "m1": "ترا پیش رو گیو باشد بجنگ",
      "m2": "که با فر و برزست و چنگ پلنگ",
      "verse_number": 32
    },
    {
      "id": "ee7cd080-9c46-40ab-8d93-67caa5daffbf",
      "m1": "فرازآور از هر سوی ساز رزم",
      "m2": "مبادا که آید ترا رای بزم",
      "verse_number": 33
    },
    {
      "id": "6b14630c-3a2e-49a8-a91c-8fe0dd6fdbec",
      "m1": "نهاد از بر نامه بر مهر شاه",
      "m2": "فرستاده را گفت برکش براه",
      "verse_number": 34
    },
    {
      "id": "152b26b5-1360-414e-a98c-38a89cde219e",
      "m1": "ز رفتن شب و روز ماسای هیچ",
      "m2": "بهر منزلی اسپ دیگر بسیچ",
      "verse_number": 35
    },
    {
      "id": "fd5d1cde-4496-4f90-a712-e7ee15cac76c",
      "m1": "بیامد فرستاده هم زین نشان",
      "m2": "بنزدیک آن نامور سرکشان",
      "verse_number": 36
    },
    {
      "id": "f9462d7b-af52-4d87-849c-fa3c09b35534",
      "m1": "بنزد فریبرز شد نامه دار",
      "m2": "بدو داد پس نامهٔ شهریار",
      "verse_number": 37
    },
    {
      "id": "effc64c2-e08c-4b00-b9df-29cb75efe76b",
      "m1": "فریبرز طوس و یلان را بخواند",
      "m2": "ز کار گذشته فراوان براند",
      "verse_number": 38
    },
    {
      "id": "ba36c3d4-7841-49f7-86b7-4d6a5058294f",
      "m1": "همان نامور گیو و گودرز را",
      "m2": "سواران و گردان آن مرز را",
      "verse_number": 39
    },
    {
      "id": "f96f1820-67ac-40a4-b203-1e9ff508163c",
      "m1": "چو برخواند آن نامهٔ شهریار",
      "m2": "جهان را درختی نو آمد ببار",
      "verse_number": 40
    },
    {
      "id": "88c22ab8-4343-4206-a21e-1e9a74f8b0bc",
      "m1": "بزرگان و شیران ایران زمین",
      "m2": "همه شاه را خواندند آفرین",
      "verse_number": 41
    },
    {
      "id": "4a1ce148-be5a-43d5-a9c5-58a083136d93",
      "m1": "بیاورد طوس آن گرامی درفش",
      "m2": "ابا کوس و پیلان و زرینه کفش",
      "verse_number": 42
    },
    {
      "id": "b86aa110-b481-40ae-bce1-e52a679bde94",
      "m1": "بنزد فریبرز بردند و گفت",
      "m2": "که آمد سزا را سزاوار جفت",
      "verse_number": 43
    },
    {
      "id": "78edacba-3f0d-4ee9-83b2-03efde62f775",
      "m1": "همه ساله بخت تو پیروز باد",
      "m2": "همه روزگار تو نوروز باد",
      "verse_number": 44
    },
    {
      "id": "a1e0e9f8-991f-4177-a09a-c94cded135c5",
      "m1": "برفت و ببرد آنک بد نوذری",
      "m2": "سواران جنگآور و لشکری",
      "verse_number": 45
    },
    {
      "id": "30f5e9ee-54d9-4d50-8c92-ebd3c806c020",
      "m1": "بنزدیک شاه آمد از دشت جنگ",
      "m2": "برهبر نکرد ایچگونه درنگ",
      "verse_number": 46
    },
    {
      "id": "915cc584-d4ac-4a05-8ec0-d988c3767d4b",
      "m1": "زمین را ببوسید در پیش شاه",
      "m2": "نکرد ایچ خسرو بدو در نگاه",
      "verse_number": 47
    },
    {
      "id": "dff15d7d-fe29-44b0-a579-f6a7fe145295",
      "m1": "بدشنام بگشاد لب شهریار",
      "m2": "بران انجمن طوس را کرد خوار",
      "verse_number": 48
    },
    {
      "id": "701c5e7d-47ca-4425-82ff-047d45a8d259",
      "m1": "ازان پس بدو گفت کای بدنشان",
      "m2": "که کمباد نامت ز گردنکشان",
      "verse_number": 49
    },
    {
      "id": "578c925b-9f95-425a-a58b-52e0a0166359",
      "m1": "نترسی همی از جهاندار پاک",
      "m2": "ز گردان نیامد ترا شرم و باک",
      "verse_number": 50
    },
    {
      "id": "90d6a68d-7efe-41ec-8d70-49863a1b1baf",
      "m1": "نگفتم مرو سوی راه چرم",
      "m2": "برفتی و دادی دل من به غم",
      "verse_number": 51
    },
    {
      "id": "f10f102d-3381-4841-abcf-a8cee72f6f85",
      "m1": "نخستین بکین من آراستی",
      "m2": "نژاد سیاوش را کاستی",
      "verse_number": 52
    },
    {
      "id": "1fd6e466-f945-44b9-a0bf-ccd226f50d34",
      "m1": "برادر سرافراز جنگی فرود",
      "m2": "کجا هم چنو در زمانه نبود",
      "verse_number": 53
    },
    {
      "id": "3713a6eb-ec2c-404f-8814-49c7db0ffa25",
      "m1": "بکشتی کسی را که در کارزار",
      "m2": "چو تو لشکری خواستی روزکار",
      "verse_number": 54
    },
    {
      "id": "1406c574-c446-424a-bd4e-11ff6711d37e",
      "m1": "وزان پس که رفتی بران رزمگاه",
      "m2": "نبودت به جز رامش و بزمگاه",
      "verse_number": 55
    },
    {
      "id": "db0a32c1-bd30-4fbd-8b8a-e75b239c5dd4",
      "m1": "ترا جایگه نیست در شارستان",
      "m2": "بزیبد ترا بند و بیمارستان",
      "verse_number": 56
    },
    {
      "id": "2f41f1ba-ce6f-4113-92e1-c3b72eab22d6",
      "m1": "ترا پیش آزادگان کار نیست",
      "m2": "کجا مر ترا رای هشیار نیست",
      "verse_number": 57
    },
    {
      "id": "2463fb84-852e-4cf7-bbac-b72b9de6cb60",
      "m1": "سزاوار مسماری و بند و غل",
      "m2": "نه اندر خور تاج و دیهیم و مل",
      "verse_number": 58
    },
    {
      "id": "88f9fad4-7669-4cad-a107-8df84163e3c6",
      "m1": "نژاد منوچهر و ریش سپید",
      "m2": "ترا داد بر زندگانی امید",
      "verse_number": 59
    },
    {
      "id": "42d3913c-9f1e-4999-a208-507302ee0245",
      "m1": "وگرنه بفرمودمی تا سرت",
      "m2": "بداندیش کردی جدا از برت",
      "verse_number": 60
    },
    {
      "id": "ada1f474-2504-420c-be73-a9971440cee6",
      "m1": "برو جاودان خانه زندان توست",
      "m2": "همان گوهر بد نگهبان توست",
      "verse_number": 61
    },
    {
      "id": "30b7b411-f18c-440b-ab4d-6fdf2aca41aa",
      "m1": "ز پیشش براند و بفرمود بند",
      "m2": "به بند از دلش بیخ شادی بکند",
      "verse_number": 62
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 62
  }
}