{
  "id": "4f777629-3dd0-4074-a8e5-50330dbe8d07",
  "title": "بخش ۱۶",
  "verses": [
    {
      "id": "2d0b7e8e-607a-4d16-ba42-76fdcddba6bb",
      "m1": "سه روزش درنگ آمد اندر چرم",
      "m2": "چهارم برآمد ز شیپور دم",
      "verse_number": 1
    },
    {
      "id": "ed1d2ff6-05a3-4fd0-8f2d-bec3419cee43",
      "m1": "سپه برگرفت و بزد نای و کوس",
      "m2": "زمین کوه تا کوه گشت آبنوس",
      "verse_number": 2
    },
    {
      "id": "0d44fe5e-a85e-4a58-8165-3b2a5a9f30cb",
      "m1": "هرآنکس که دیدی ز توران سپاه",
      "m2": "بکشتی تنش را فگندی براه",
      "verse_number": 3
    },
    {
      "id": "76e93dbd-0621-4626-a9a1-1350aee845a5",
      "m1": "همه مرزها کرد بیتار و پود",
      "m2": "همی رفت پیروز تا کاسهرود",
      "verse_number": 4
    },
    {
      "id": "18c47da6-655e-4da5-b7b3-b510c0898933",
      "m1": "بدان مرز لشکر فرود آورید",
      "m2": "زمین گشت زان خیمهها ناپدید",
      "verse_number": 5
    },
    {
      "id": "5163042e-216b-45b2-aa8b-d1aa42dec071",
      "m1": "خبر شد بترکان کز ایران سپاه",
      "m2": "سوی کاسه رود اندر آمد براه",
      "verse_number": 6
    },
    {
      "id": "bfea104a-7204-46d9-b05a-38851ea90577",
      "m1": "ز ترکان بیامد دلیری جوان",
      "m2": "پلاشان بیداردل پهلوان",
      "verse_number": 7
    },
    {
      "id": "666dacee-06e5-41b8-be77-491a70808029",
      "m1": "بیامد که لشکر همی بنگرد",
      "m2": "درفش سران را همی بشمرد",
      "verse_number": 8
    },
    {
      "id": "41fc6ab6-1f7c-43a5-9f62-34a00ea093b9",
      "m1": "بلشکرگه اندر یکی کوه بود",
      "m2": "بلند و بیکسو ز انبوه بود",
      "verse_number": 9
    },
    {
      "id": "ef6b8167-b7c2-4d08-bc3b-0d93ce67c259",
      "m1": "نشسته برو گیو و بیژن بهم",
      "m2": "همی رفت هرگونه از بیش و کم",
      "verse_number": 10
    },
    {
      "id": "4c3667d8-fc57-484a-b884-634d3d6df209",
      "m1": "درفش پلاشان ز توران سپاه",
      "m2": "بدیدار ایشان برآمد ز راه",
      "verse_number": 11
    },
    {
      "id": "f18f4d97-c6fd-4ea4-ae6f-f0f40b1edb48",
      "m1": "چو از دور گیو دلاور بدید",
      "m2": "بزد دست و تیغ از میان برکشید",
      "verse_number": 12
    },
    {
      "id": "7cfb4893-f3da-4e29-a1ef-2df105eefb45",
      "m1": "چنین گفت کامد پلاشان شیر",
      "m2": "یکی نامداری سواری دلیر",
      "verse_number": 13
    },
    {
      "id": "069fe87c-db7e-40d9-b4aa-80d045df102b",
      "m1": "شوم گر سرش را ببرم ز تن",
      "m2": "گرش بسته آرم بدین انجمن",
      "verse_number": 14
    },
    {
      "id": "5ac79f34-0940-4b96-a684-375e95f78434",
      "m1": "بدو گفت بیژن که گر شهریار",
      "m2": "مرا داد خلعت بدین کارزار",
      "verse_number": 15
    },
    {
      "id": "31fd2eaf-3c71-4009-b01b-c61667e02102",
      "m1": "بفرمان مرا بست باید کمر",
      "m2": "برزم پلاشان پرخاشخر",
      "verse_number": 16
    },
    {
      "id": "810887f8-baac-4ec1-8887-a9336fd08375",
      "m1": "به بیژن چنین گفت گیو دلیر",
      "m2": "که مشتاب در چنگ این نره شیر",
      "verse_number": 17
    },
    {
      "id": "b1a0748c-9b4b-4b55-a55e-5dbacb2a4944",
      "m1": "نباید که با او نتابی بجنگ",
      "m2": "کنی روز بر من برین جنگ تنگ",
      "verse_number": 18
    },
    {
      "id": "810011af-ee02-4e31-a76b-1c30f92f8f42",
      "m1": "پلاشان چو شیر است در مرغزار",
      "m2": "جز از مرد جنگی نجوید شکار",
      "verse_number": 19
    },
    {
      "id": "ebbf2a9d-c25f-4e0d-aceb-4ecf9d7ede30",
      "m1": "بدو گفت بیژن مرا زین سخن",
      "m2": "به پیش جهاندار ننگی مکن",
      "verse_number": 20
    },
    {
      "id": "d5bd2701-be7d-4102-9c62-939b35486f37",
      "m1": "سلیح سیاوش مرا ده بجنگ",
      "m2": "پس آنگه نگه کن شکار پلنگ",
      "verse_number": 21
    },
    {
      "id": "58a4a966-0fab-4a3b-b1b5-cfb745abb4cc",
      "m1": "بدو داد گیو دلیر آن زره",
      "m2": "همی بست بیژن زره را گره",
      "verse_number": 22
    },
    {
      "id": "c9ee8b38-f9f0-4f1d-b945-f0736213b96f",
      "m1": "یکی بارهٔ تیزرو برنشست",
      "m2": "بهامون خرامید نیزه بدست",
      "verse_number": 23
    },
    {
      "id": "cca59c55-2944-4722-9b49-42f5e6c37df1",
      "m1": "پلاشان یکی آهو افگنده بود",
      "m2": "کبابش بر آتش پراگنده بود",
      "verse_number": 24
    },
    {
      "id": "ede42b56-bbc5-4b19-9aef-a46cbc6c6125",
      "m1": "همی خورد و اسپش چران و چمان",
      "m2": "پلاشان نشسته به بازو کمان",
      "verse_number": 25
    },
    {
      "id": "a7428591-acee-4764-b31c-3561dd5baa41",
      "m1": "چو اسپش ز دور اسپ بیژن بدید",
      "m2": "خروشی برآورد و اندر دمید",
      "verse_number": 26
    },
    {
      "id": "9ecff9e1-912e-45bb-9393-119d2005d208",
      "m1": "پلاشان بدانست کامد سوار",
      "m2": "بیامد بسیچیدهٔ کارزار",
      "verse_number": 27
    },
    {
      "id": "10a50f17-1f16-4c0f-b224-0c93a4b7dc6e",
      "m1": "یکی بانگ برزد به بیژن بلند",
      "m2": "منم گفت شیراوژن و و دیوبند",
      "verse_number": 28
    },
    {
      "id": "3396fb2d-d1f1-4397-941c-b749f7dd85bd",
      "m1": "بگو آشکارا که نام تو چیست",
      "m2": "که اختر همی بر تو خواهد گریست",
      "verse_number": 29
    },
    {
      "id": "0d4837ac-3ceb-4728-9124-1a217acf81d4",
      "m1": "دلاور بدو گفت من بیژنم",
      "m2": "برزم اندرون پیل و رویینتنم",
      "verse_number": 30
    },
    {
      "id": "fe242f15-57b2-4109-bdd9-f0202dd1b35a",
      "m1": "نیا شیر جنگی پدر گیو گرد",
      "m2": "هم اکنون ببینی ز من دستبرد",
      "verse_number": 31
    },
    {
      "id": "89a45ef1-7f71-4201-bb63-4b020bcf51fe",
      "m1": "بروز بلا در دم کارزار",
      "m2": "تو بر کوه چون گرگ مردار خواه",
      "verse_number": 32
    },
    {
      "id": "abbf0f74-a687-4438-9d33-3984cd370906",
      "m1": "همی دود و خاکستر و خون خوری",
      "m2": "گه آمد که لشکر بهامون بری",
      "verse_number": 33
    },
    {
      "id": "b33c0b40-f65f-48fc-b42d-473dd2e90b6f",
      "m1": "پلاشان بپاسخ نکرد ایچ یاد",
      "m2": "برانگیخت آن پیلتن را چو باد",
      "verse_number": 34
    },
    {
      "id": "dc0828d5-8d2f-412a-ab72-8e5aaf158517",
      "m1": "سواران بنیزه برآویختند",
      "m2": "یکی گرد تیره برانگیختند",
      "verse_number": 35
    },
    {
      "id": "d2fa4116-08af-41e2-956e-7d3fd6682755",
      "m1": "سنانهای نیزه بهم برشکست",
      "m2": "یلان سوی شمشیر بردند دست",
      "verse_number": 36
    },
    {
      "id": "dce60d42-7bdf-4d6c-8758-faac77ad07e2",
      "m1": "بزخم اندرون تیغ شد لخت لخت",
      "m2": "ببودند لرزان چو شاخ درخت",
      "verse_number": 37
    },
    {
      "id": "99442a4c-f0e0-4a94-ad5c-21b913bcc15a",
      "m1": "بآب اندرون غرقه شد بارگی",
      "m2": "سرانشان غمی گشت یکبارگی",
      "verse_number": 38
    },
    {
      "id": "b705bfd6-6891-4b96-b8fa-44814c6742c4",
      "m1": "عمود گران برکشیدند باز",
      "m2": "دو شیر سرافراز و دو رزمساز",
      "verse_number": 39
    },
    {
      "id": "842e727b-70fb-4166-9277-2140374c101b",
      "m1": "چنین تا برآورد بیژن خروش",
      "m2": "عمودگران برنهاده بدوش",
      "verse_number": 40
    },
    {
      "id": "3cc44990-db95-4ccd-b2d7-d13be3e753b4",
      "m1": "بزد بر میان پلاشان گرد",
      "m2": "همه مهرهٔ پشت بشکست خرد",
      "verse_number": 41
    },
    {
      "id": "e60e9d7c-b022-4ca5-8a8a-059b228c8837",
      "m1": "ز بالای اسپ اندر آمد تنش",
      "m2": "نگون شد بر و مغفر و جوشنش",
      "verse_number": 42
    },
    {
      "id": "659435bf-c962-435d-9834-7460e65506d8",
      "m1": "فرود آمد از باره بیژن چو گرد",
      "m2": "سر مرد جنگی ز تن دور کرد",
      "verse_number": 43
    },
    {
      "id": "0a4d6b88-e0b2-46da-8c48-2b23c6793fb5",
      "m1": "سلیح و سر و اسپ آن نامجوی",
      "m2": "بیاورد و سوی پدر کرد روی",
      "verse_number": 44
    },
    {
      "id": "925bab08-d509-44da-a173-29e2c95298c0",
      "m1": "دل گیو بد زان سخن پر ز درد",
      "m2": "که چون گردد آن باد روز نبرد",
      "verse_number": 45
    },
    {
      "id": "62e2d38d-569f-4f73-b7ed-1178fdd1d272",
      "m1": "خروشان و جوشان بدان دیدهگاه",
      "m2": "که تا گرد بیژن کی آید ز راه",
      "verse_number": 46
    },
    {
      "id": "ec21c9a1-d15b-4409-89a8-aa984926e2ab",
      "m1": "همی آمد از راه پور جوان",
      "m2": "سر و جوشن و اسپ آن پهلوان",
      "verse_number": 47
    },
    {
      "id": "8dac19af-a06d-4b1e-94a2-1fcd4aa94e19",
      "m1": "بیاورد و بنهاد پیش پدر",
      "m2": "بدو گفت پیروز باش ای پسر",
      "verse_number": 48
    },
    {
      "id": "b1e252c6-6470-42e6-a507-8121e78ede5e",
      "m1": "برفتند با شادمانی ز جای",
      "m2": "نهادند سر سوی پردهسرای",
      "verse_number": 49
    },
    {
      "id": "c0ee7838-8373-4cce-abbc-a42539f255c0",
      "m1": "بیاورد پیش سپهبد سرش",
      "m2": "همان اسپ با جوشن و مغفرش",
      "verse_number": 50
    },
    {
      "id": "2ba05a7b-3026-4c84-b34f-124238e5bbb7",
      "m1": "چنان شاد شد زان سخن پهلوان",
      "m2": "که گفتی برافشاند خواهد روان",
      "verse_number": 51
    },
    {
      "id": "efda3287-fdea-498f-9aa8-52800267b1d9",
      "m1": "بدو گفت کای پور پشت سپاه",
      "m2": "سر نامداران و دیهیم شاه",
      "verse_number": 52
    },
    {
      "id": "dad04735-f9b5-4baa-a4dd-7a002cea90fa",
      "m1": "همیشه بزی شاد و برترمنش",
      "m2": "ز تو دور بادا بد بدکنش",
      "verse_number": 53
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 53
  }
}