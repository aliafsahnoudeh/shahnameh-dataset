{
  "id": "71a3b10b-572a-4785-809e-088e3b0a6174",
  "title": "بخش ۱۸",
  "verses": [
    {
      "id": "bd2c1825-ead6-4d8a-bc4e-5f251c3031cc",
      "m1": "چو خورشید بر زد ز گردون درفش",
      "m2": "دم شب شد از خنجر او بنفش",
      "verse_number": 1
    },
    {
      "id": "a5d55424-fd33-47f5-b8b3-f8f9958e2719",
      "m1": "غمی شد دل مرد پرخاشجوی",
      "m2": "بدانست کو را بد آمد بروی",
      "verse_number": 2
    },
    {
      "id": "204409ec-d4c8-4d3c-91ae-e9fb38c5aa08",
      "m1": "برآمد خروش خروس و چکاو",
      "m2": "کبوده نیامد بنزد تژاو",
      "verse_number": 3
    },
    {
      "id": "822ec917-9fa0-45ce-a50c-d4e02befeba7",
      "m1": "سپاهی که بودند با او بخواند",
      "m2": "وزان جایگه تیز لشکر براند",
      "verse_number": 4
    },
    {
      "id": "90ede31d-df3d-4846-a61a-2671d871b31a",
      "m1": "تژاو سپهبد بشد با سپاه",
      "m2": "بایران خروش آمد از دیدهگاه",
      "verse_number": 5
    },
    {
      "id": "c484fa2f-379b-49ee-945b-8eb1e1cb189d",
      "m1": "که آمد سپاهی ز ترکان بجنگ",
      "m2": "سپهبد نهنگی درفشی پلنگ",
      "verse_number": 6
    },
    {
      "id": "2ab871c7-dd64-442e-963e-92d45abf2c61",
      "m1": "ز گردنکشان پیش او رفت گیو",
      "m2": "تنی چند با او ز گردان نیو",
      "verse_number": 7
    },
    {
      "id": "fa8b5742-ae8a-4b22-a5c9-228dfcd33b57",
      "m1": "برآشفت و نامش بپرسید زوی",
      "m2": "چنین گفت کای مرد پرخاشجوی",
      "verse_number": 8
    },
    {
      "id": "c290944a-4107-4599-9490-1f8b39d7ba77",
      "m1": "بدین مایه مردم بجنگ آمدی",
      "m2": "ز هامون بکام نهنگ آمدی",
      "verse_number": 9
    },
    {
      "id": "63cdbe48-a72c-43bb-8e78-85cee0424836",
      "m1": "بپاسخ چنین گفت کای نامدار",
      "m2": "ببینی کنون رزم شیر سوار",
      "verse_number": 10
    },
    {
      "id": "89738a0c-b564-48d8-bc58-9d533cc4a198",
      "m1": "بگیتی تژاوست نام مرا",
      "m2": "بهر دم برآرند کام مرا",
      "verse_number": 11
    },
    {
      "id": "6523f485-185e-40be-b77a-ecba64d8603a",
      "m1": "نژادم بگوهر از ایران بدست",
      "m2": "ز گردان وز پشت شیران بدست",
      "verse_number": 12
    },
    {
      "id": "11ccc3df-d5f2-4092-9bef-e50693d214db",
      "m1": "کنون مرزبانم بدین تخت و گاه",
      "m2": "نگین بزرگان و داماد شاه",
      "verse_number": 13
    },
    {
      "id": "f7a6ecb0-8eb1-428f-8e16-700f2f9448f5",
      "m1": "بدو گفت گیو اینکه گفتی مگوی",
      "m2": "که تیره شود زین سخن آبروی",
      "verse_number": 14
    },
    {
      "id": "9133a171-5578-480e-93f1-aec239ee11a5",
      "m1": "از ایران بتوران که دارد نشست",
      "m2": "مگر خوردنش خون بود گر کبست",
      "verse_number": 15
    },
    {
      "id": "67e98c3a-39db-479f-a99f-2759e528f930",
      "m1": "اگر مرزبانی و داماد شاه",
      "m2": "چرا بیشتر زین نداری سپاه",
      "verse_number": 16
    },
    {
      "id": "19467f02-5c95-4eac-9638-7661d8a2f13a",
      "m1": "بدین مایه لشکر تو تندی مجوی",
      "m2": "بتندی بپیش دلیران مپوی",
      "verse_number": 17
    },
    {
      "id": "0a75fb6a-74ce-4d3f-95ee-fb2e006e47aa",
      "m1": "که این پرهنر نامدار دلیر",
      "m2": "سر مرزبان اندر آرد بزیر",
      "verse_number": 18
    },
    {
      "id": "8258c36f-fa57-4911-bdfc-969fe03f6717",
      "m1": "گر اایدونک فرمان کنی با سپاه",
      "m2": "بایران خرامی بنزدیک شاه",
      "verse_number": 19
    },
    {
      "id": "af13ff6b-b3a2-4b88-997e-9da80477bf09",
      "m1": "کنون پیش طوس سپهبد شوی",
      "m2": "بگویی و گفتار او بشنوی",
      "verse_number": 20
    },
    {
      "id": "2ba011aa-6820-43d7-8de7-840e33c44273",
      "m1": "ستانمت زو خلعت و خواسته",
      "m2": "پرستنده و اسپ آراسته",
      "verse_number": 21
    },
    {
      "id": "fcd6eda8-c606-4ccc-a8d6-33ede271dd40",
      "m1": "تژاو فریبنده گفت ای دلیر",
      "m2": "درفش مرا کس نیارد بزیر",
      "verse_number": 22
    },
    {
      "id": "4650a6d1-7eb3-4db3-9010-96ae8868e301",
      "m1": "مرا ایدر اکنون نگینست و گاه",
      "m2": "پرستنده و گنج و تاج و سپاه",
      "verse_number": 23
    },
    {
      "id": "51c18802-4bd3-44eb-ad0c-660fee1011e7",
      "m1": "همان مرز و شاهی چو افراسیاب",
      "m2": "کس این را ز ایران نبیند بخواب",
      "verse_number": 24
    },
    {
      "id": "9f94f340-daee-48d2-af16-be1d7bf69849",
      "m1": "پرستار وز مادیانان گله",
      "m2": "بدشت گروگرد کرده یله",
      "verse_number": 25
    },
    {
      "id": "55b4d3e1-0151-4290-8333-e6c8cbfc668a",
      "m1": "تو این اندکی لشکر من مبین",
      "m2": "مراجوی با گرز بر پشت زین",
      "verse_number": 26
    },
    {
      "id": "7a2c4c19-1071-45b5-a082-14104a3fcfc0",
      "m1": "من امروز با این سپاه آن کنم",
      "m2": "کزین آمدن تان پشیمان کنم",
      "verse_number": 27
    },
    {
      "id": "5b16b00e-8b09-439b-8e5f-3adb6dada40f",
      "m1": "چنین گفت بیژن بفرخ پدر",
      "m2": "که ای نامور گرد پرخاشخر",
      "verse_number": 28
    },
    {
      "id": "c4437b92-6c70-418d-bc8f-4fe2206bf5db",
      "m1": "سرافراز و بیداردل پهلوان",
      "m2": "به پیری نه آنی که بودی جوان",
      "verse_number": 29
    },
    {
      "id": "785264fc-0526-4a68-9667-93691e1ead68",
      "m1": "ترا با تژاو این همه پند چیست",
      "m2": "بترکی چنین مهر و پیوند چیست",
      "verse_number": 30
    },
    {
      "id": "970ba476-bec4-45fb-9c96-e953d9741fbc",
      "m1": "همی گرز و خنجر بباید کشید",
      "m2": "دل و مغز ایشان بباید درید",
      "verse_number": 31
    },
    {
      "id": "0dd7d25f-af02-499e-aa5f-c7f97fd951bd",
      "m1": "برانگیخت اسپ و برآمد خروش",
      "m2": "نهادند گوپال و خنجر بدوش",
      "verse_number": 32
    },
    {
      "id": "4c278379-9459-4890-8c11-065db8baf0a8",
      "m1": "یکی تیره گرد از میان بردمید",
      "m2": "بدان سان که خورشید شد ناپدید",
      "verse_number": 33
    },
    {
      "id": "10791d5e-830b-4ddb-b7a8-006d9477b961",
      "m1": "جهان شد چو آبار بهمن سیاه",
      "m2": "ستاره ندیدند روشن نه ماه",
      "verse_number": 34
    },
    {
      "id": "3580a01e-e800-4af7-99a0-934d230db77b",
      "m1": "بقلب سپاه اندرون گیو گرد",
      "m2": "همی از جهان روشنایی ببرد",
      "verse_number": 35
    },
    {
      "id": "28f92a3c-50c1-4517-9e24-b732f01ac4c6",
      "m1": "بپیش اندرون بیژن تیزچنگ",
      "m2": "همی بزمگاه آمدش جای جنگ",
      "verse_number": 36
    },
    {
      "id": "da41034b-8e8e-4927-a5ea-9a3285f1a5cb",
      "m1": "وزان سوی با تاج بر سر تژاو",
      "m2": "که بودیش با شیر درنده تاو",
      "verse_number": 37
    },
    {
      "id": "30ce8585-2c02-49e2-a439-c00c70f50cf2",
      "m1": "یلانش همه نیکمردان و شیر",
      "m2": "که هرگز نشدشان دل از رزم سیر",
      "verse_number": 38
    },
    {
      "id": "24439f77-7db5-4dbd-b775-9fdc4b54e743",
      "m1": "بسی برنیامد برین روزگار",
      "m2": "که آن ترک سیر آمد از کارزار",
      "verse_number": 39
    },
    {
      "id": "896c25a8-ad70-447b-b39f-7f362fe7f52e",
      "m1": "سه بهره ز توران سپه کشته شد",
      "m2": "سربخت آن ترک برگشته شد",
      "verse_number": 40
    },
    {
      "id": "05b57ace-c70e-49d0-a089-edee00ecc721",
      "m1": "همی شد گریزان تژاو دلیر",
      "m2": "پسش بیژن گیو برسان شیر",
      "verse_number": 41
    },
    {
      "id": "0d59cb7e-0fa9-44af-ac02-6c981cc55f63",
      "m1": "خروشان و جوشان و نیزه بدست",
      "m2": "تو گفتی که غرنده شیرست مست",
      "verse_number": 42
    },
    {
      "id": "ce98faf1-e9ec-4bfc-9a85-fb2860ed3f39",
      "m1": "یکی نیزه زد بر میان تژاو",
      "m2": "نماند آن زمان با تژاو ایچ تاو",
      "verse_number": 43
    },
    {
      "id": "96270f5f-e662-467e-92e5-daa392693ef1",
      "m1": "گراینده بدبند رومی زره",
      "m2": "بپیچید و بگشاد بند گره",
      "verse_number": 44
    },
    {
      "id": "300c9a9b-f0f4-4a01-a428-56206dfb6b12",
      "m1": "بیفگند نیزه بیازید چنگ",
      "m2": "چو بر کوه بر غرم تازد پلنگ",
      "verse_number": 45
    },
    {
      "id": "e2f32d45-83bf-4c01-9ca3-bba8591dfc01",
      "m1": "بدان سان که شاهین رباید چکاو",
      "m2": "ربود آن گرانمایه تاج تژاو",
      "verse_number": 46
    },
    {
      "id": "1d172350-5ddb-484b-a5ff-263412cec9c8",
      "m1": "که افراسیابش بسر برنهاد",
      "m2": "نبودی جدا زو بخواب و بیاد",
      "verse_number": 47
    },
    {
      "id": "3406f79a-4362-47e7-a166-52b8f8be42fa",
      "m1": "چنین تا در دژ همی تاخت اسپ",
      "m2": "پساندرش بیژن چو آذرگشسپ",
      "verse_number": 48
    },
    {
      "id": "6d3ae8a1-77d5-426e-8406-8cd1d3097e15",
      "m1": "چو نزدیکی دژ رسید اسپنوی",
      "m2": "بیامد خروشان پر از آب روی",
      "verse_number": 49
    },
    {
      "id": "e65a6adf-45b0-42be-951e-4efec16190cb",
      "m1": "که از کین چنین پشت برگاشتی",
      "m2": "بدین دژ مرا خوار بگذاشتی",
      "verse_number": 50
    },
    {
      "id": "938eff0e-5776-4329-b0f9-911998532bc1",
      "m1": "سزد گر ز پس برنشانی مرا",
      "m2": "بدین ره بدشمن نمانی مرا",
      "verse_number": 51
    },
    {
      "id": "a1041896-e626-452b-8d2d-90e587b4fa74",
      "m1": "تژاو سرافراز را دل بسوخت",
      "m2": "بکردار آتش رخش برفروخت",
      "verse_number": 52
    },
    {
      "id": "295929fe-fe92-4c2e-b359-e434b23e3147",
      "m1": "فراز اسپنوی و تژاو از نشیب",
      "m2": "بدو داد در تاختن یک رکیب",
      "verse_number": 53
    },
    {
      "id": "ce2b34cf-1b59-4b8a-8e9f-89ce9c67738a",
      "m1": "پس اندر نشاندش چو ماه دمان",
      "m2": "برآمد ز جا باره زیرش دنان",
      "verse_number": 54
    },
    {
      "id": "aa7649fe-7753-4277-80aa-1c0c05730d9b",
      "m1": "همی تاخت چون گرد با اسپنوی",
      "m2": "سوی راه توران نهادند روی",
      "verse_number": 55
    },
    {
      "id": "b9d2d2d6-c170-496f-a76b-bf9532b0fd00",
      "m1": "زمانی دوید اسپ جنگی تژاو",
      "m2": "نماند ایچ با اسپ و با مرد تاو",
      "verse_number": 56
    },
    {
      "id": "38f25de7-0d38-4ca1-8f25-83989971a258",
      "m1": "تژاو آن زمان با پرستنده گفت",
      "m2": "که دشوار کار آمد ای خوب جفت",
      "verse_number": 57
    },
    {
      "id": "9a2c7e9d-ac40-416d-a26a-24e8fa32d817",
      "m1": "فروماند این اسپ جنگی ز کار",
      "m2": "ز پس بدسگال آمد و پیش غار",
      "verse_number": 58
    },
    {
      "id": "18dc0d1e-2327-4ed7-943c-83229d4fb872",
      "m1": "اگر دور از ایدر به بیژن رسم",
      "m2": "بکام بداندیش دشمن رسم",
      "verse_number": 59
    },
    {
      "id": "bb03d18f-d8bf-46d4-a501-aebc2c044579",
      "m1": "ترا نیست دشمن بیکبارگی",
      "m2": "بمان تا برانم من این بارگی",
      "verse_number": 60
    },
    {
      "id": "867d1df0-8337-44f9-b136-98aace5fba0f",
      "m1": "فرود آمد از اسپ او اسپنوی",
      "m2": "تژاو از غم او پر از آب روی",
      "verse_number": 61
    },
    {
      "id": "2f2487c4-e359-4617-b846-685c905c7553",
      "m1": "سبکبار شد اسپ و تندی گرفت",
      "m2": "پسش بیژن گیو کندی گرفت",
      "verse_number": 62
    },
    {
      "id": "44eb0c0f-ac8f-49ff-b22d-3d1ba7b121c7",
      "m1": "چو دید آن رخ ماهروی اسپنوی",
      "m2": "ز گلبرگ روی و پر از مشک موی",
      "verse_number": 63
    },
    {
      "id": "0662231d-ce76-4d18-8787-75687b2482e7",
      "m1": "پس پشت خویش اندرش جای کرد",
      "m2": "سوی لشکر پهلوان رای کرد",
      "verse_number": 64
    },
    {
      "id": "e5207b7e-bee6-4410-955a-997be47b849a",
      "m1": "بشادی بیامد بدرگاه طوس",
      "m2": "ز درگاه برخاست آوای کوس",
      "verse_number": 65
    },
    {
      "id": "3d3cd666-085c-462e-886f-cffc36a64485",
      "m1": "که بیدار دل شیر جنگی سوار",
      "m2": "دمان با شکار آمد از مرغزار",
      "verse_number": 66
    },
    {
      "id": "489df86c-86e6-4b03-acd2-a3ea2708cbb2",
      "m1": "سپهدار و گردان پرخاشجوی",
      "m2": "بویرانی دژ نهادند روی",
      "verse_number": 67
    },
    {
      "id": "33985d9b-8515-42c7-bf08-7dce4c3c7ce7",
      "m1": "ازان پس برفتند سوی گله",
      "m2": "که بودند بر دشت ترکان یله",
      "verse_number": 68
    },
    {
      "id": "8ebf6886-cb8b-4295-bfe5-27f56359933b",
      "m1": "گرفتند هر یک کمندی بچنگ",
      "m2": "چنانچون بود ساز مردان جنگ",
      "verse_number": 69
    },
    {
      "id": "25fccff7-0382-4395-9fd6-f911d2b4881d",
      "m1": "بخم اندر آمد سر بارگی",
      "m2": "بیاراست لشکر بیکبارگی",
      "verse_number": 70
    },
    {
      "id": "699809dc-19c5-4866-abfe-a1a13d50c1fe",
      "m1": "نشستند بر جایگاه تژاو",
      "m2": "سواران ایران پر از خشم و تاو",
      "verse_number": 71
    },
    {
      "id": "13d6c433-0c66-4ada-9578-31c6f1ddb326",
      "m1": "تژاو غمی با دو دیده پرآب",
      "m2": "بیامد بنزدیک افراسیاب",
      "verse_number": 72
    },
    {
      "id": "ba4baa6f-32d9-4b98-ad63-8164d70715bd",
      "m1": "چنین گفت کامد سپهدار طوس",
      "m2": "ابا لشکری گشن و پیلان کوس",
      "verse_number": 73
    },
    {
      "id": "1913f8c9-9e3c-4c3b-86c1-5d5bf4adc43a",
      "m1": "پلاشان و آن نامداران مرد",
      "m2": "بخاک اندر آمد سرانشان ز گرد",
      "verse_number": 74
    },
    {
      "id": "383810bb-1cff-45c8-9e2d-1f578234d61b",
      "m1": "همه مرز و بوم آتش اندر زدند",
      "m2": "فسیله سراسر بهم برزدند",
      "verse_number": 75
    },
    {
      "id": "5eb0e5ed-7982-4d60-a044-d08c5ca779e1",
      "m1": "چو بشنید افراسیاب این سخن",
      "m2": "غمی گشت و بر چاره افگند بن",
      "verse_number": 76
    },
    {
      "id": "87990f7c-721a-4271-8323-ff4c4b5f7d73",
      "m1": "بپیران ویسه چنین گفت شاه",
      "m2": "که گفتم بیاور ز هر سو سپاه",
      "verse_number": 77
    },
    {
      "id": "ee1351bf-c04d-4410-9283-35bfdb256219",
      "m1": "درنگ آمدت رای از کاهلی",
      "m2": "ز پیری گران گشته و بددلی",
      "verse_number": 78
    },
    {
      "id": "717834be-4f2f-4e64-a000-e180188e0692",
      "m1": "نه دژ ماند اکنون نه اسپ و نه مرد",
      "m2": "نشستن نشاید بدین مرز کرد",
      "verse_number": 79
    },
    {
      "id": "da63006d-b96a-400f-9be2-d575cf065098",
      "m1": "بسی خویش و پیوند ما برده گشت",
      "m2": "بسی مرد نیکاختر آزرده گشت",
      "verse_number": 80
    },
    {
      "id": "aba18f53-52b7-488a-84b2-594b5757d1be",
      "m1": "کنون نیست امروز روز درنگ",
      "m2": "جهان گشت بر مرد بیدار تنگ",
      "verse_number": 81
    },
    {
      "id": "a25f8bc9-e7e8-4171-9e35-793d467a6d67",
      "m1": "جهاندار پیران هم اندر شتاب",
      "m2": "برون آمد از پیش افراسیاب",
      "verse_number": 82
    },
    {
      "id": "20bfcd77-5371-447c-b360-d77f5d37c1c5",
      "m1": "ز هر مرز مردان جنگی بخواند",
      "m2": "سلیح و درم داد و لشکر براند",
      "verse_number": 83
    },
    {
      "id": "dca2662f-4bf9-49e1-97d6-cc62e54c97d2",
      "m1": "چو آمد ز پهلو برون پهلوان",
      "m2": "همی نامزد کرد جای گوان",
      "verse_number": 84
    },
    {
      "id": "a9349b6d-185c-4300-ac40-1ceb67ccbe47",
      "m1": "سوی میمنه بارمان و تژاو",
      "m2": "سواران که دارند با شیر تاو",
      "verse_number": 85
    },
    {
      "id": "81c0a4e3-1809-48c7-adc4-28a93f0b337d",
      "m1": "چو نستهین گرد بر میسره",
      "m2": "کجا شیر بودی بچنگش بره",
      "verse_number": 86
    },
    {
      "id": "05525519-86d4-400e-ab53-5a0afacfe6ff",
      "m1": "جهان پر شد از نالهٔ کرنای",
      "m2": "ز غریدن کوس و هندی درای",
      "verse_number": 87
    },
    {
      "id": "8661edf9-4dae-4b30-ab27-fa9767496dd3",
      "m1": "هوا سربسر سرخ و زرد و بنفش",
      "m2": "ز بس نیزه و گونهگونه درفش",
      "verse_number": 88
    },
    {
      "id": "593a6a87-bed9-4e4d-81f6-5e0266ef5a62",
      "m1": "سپاهی ز جنگآوران صدهزار",
      "m2": "نهاده همه سر سوی کارزار",
      "verse_number": 89
    },
    {
      "id": "4aa53465-51e8-477a-97a3-4494e3481e73",
      "m1": "ز دریا بدریا نبود ایچ راه",
      "m2": "ز اسپ و ز پیل و هیون و سپاه",
      "verse_number": 90
    },
    {
      "id": "0db24893-ca6c-45e7-972b-e59f700530f0",
      "m1": "همی رفت لشکر گروها گروه",
      "m2": "نبد دشت پیدا نه دریا نه کوه",
      "verse_number": 91
    },
    {
      "id": "4d2ebeb8-5285-4620-8b7d-89c9038512e6",
      "m1": "بفرمود پیران که بیره روید",
      "m2": "از ایدر سوی راه کوته روید",
      "verse_number": 92
    },
    {
      "id": "23c999c9-f4bb-4cc1-ad59-1689c5a20308",
      "m1": "نباید که یابند خود آگهی",
      "m2": "ازین نامداران با فرهی",
      "verse_number": 93
    },
    {
      "id": "796d4285-9191-49e8-a8d2-1bba29224e4d",
      "m1": "مگر ناگهان بر سر آن گروه",
      "m2": "فرود آرم این گشن لشکر چو کوه",
      "verse_number": 94
    },
    {
      "id": "3a52ce26-89b4-49a0-97f3-17e09625e3d4",
      "m1": "برون کرد کارآگهان ناگهان",
      "m2": "همی جست بیدار کار جهان",
      "verse_number": 95
    },
    {
      "id": "90ebed60-805a-4789-bad6-c27aac94d65e",
      "m1": "بتندی براه اندر آورد روی",
      "m2": "بسوی گروگرد شد جنگجوی",
      "verse_number": 96
    },
    {
      "id": "f79ce086-7b86-4c41-849f-03348f6c5c6c",
      "m1": "میان سرخس است نزدیک طوس",
      "m2": "ز باورد برخاست آوای کوس",
      "verse_number": 97
    },
    {
      "id": "1d0f164b-e2b5-4d05-a0b7-7bf12df072d2",
      "m1": "بپیوست گفتار کارآگهان",
      "m2": "بپیران بگفتند یک یک نهان",
      "verse_number": 98
    },
    {
      "id": "d68a5639-1cd1-464c-8181-1d8592e9650f",
      "m1": "که ایشان همه میگسارند و مست",
      "m2": "شب و روز با جام پر می بدست",
      "verse_number": 99
    },
    {
      "id": "68986783-a907-48d9-9167-16a713ce63ba",
      "m1": "سواری طلایه ندیدم براه",
      "m2": "نه اندیشهٔ رزم توران سپاه",
      "verse_number": 100
    },
    {
      "id": "e433d704-1c6e-4024-aae5-dc0c2eb0e3d3",
      "m1": "چو بشنید پیران یلان را بخواند",
      "m2": "ز لشکر فراوان سخنها براند",
      "verse_number": 101
    },
    {
      "id": "f0fe5ced-e53e-4e05-84f9-92312b9fd47b",
      "m1": "که در رزم ما را چنین دستگاه",
      "m2": "نبودست هرگز بایران سپاه",
      "verse_number": 102
    }
  ],
