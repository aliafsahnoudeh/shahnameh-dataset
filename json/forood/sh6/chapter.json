{
  "id": "3bb8bfc3-5704-489b-b29b-9348b47d25f6",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "d686545a-3cc7-49c5-aa87-cf1515a49fbc",
      "m1": "چو ایرانیان از بر کوهسار",
      "m2": "بدیدند جای فرود و تخوار",
      "verse_number": 1
    },
    {
      "id": "b8ea744b-0a91-449b-90eb-53866c2551c7",
      "m1": "برآشفت ازیشان سپهدار طوس",
      "m2": "فروداشت بر جای پیلان و کوس",
      "verse_number": 2
    },
    {
      "id": "7b274f8a-86e1-4b9a-a19f-a575ebb7000b",
      "m1": "چنین گفت کز لشکر نامدار",
      "m2": "سواری بباید کنون نیکیار",
      "verse_number": 3
    },
    {
      "id": "4dc8b1d7-511f-4b4c-84d0-c7c4055cb806",
      "m1": "که جوشان شود زین میان گروه",
      "m2": "برد اسپ تا بر سر تیغ کوه",
      "verse_number": 4
    },
    {
      "id": "4ab3b9f8-3503-4310-a35c-ef6e3eb84ccb",
      "m1": "ببیند که آن دو دلاور کیند",
      "m2": "بران کوه سر بر ز بهر چیند",
      "verse_number": 5
    },
    {
      "id": "5b6c8101-244b-414c-b34e-45fe61dfba32",
      "m1": "گر ایدونک از لشکر ما یکیست",
      "m2": "زند بر سرش تازیانه دویست",
      "verse_number": 6
    },
    {
      "id": "c053237a-1f0b-4d56-8866-c0d4c3c0aceb",
      "m1": "وگر ترک باشند و پرخاش جوی",
      "m2": "ببندد کشانش بیارد بروی",
      "verse_number": 7
    },
    {
      "id": "42d91667-bf68-40e3-b485-d67480492796",
      "m1": "وگر کشته آید سپارد بخاک",
      "m2": "سزد گر ندارد از آن بیم و باک",
      "verse_number": 8
    },
    {
      "id": "625e2654-5123-4850-956b-9475bf9549a1",
      "m1": "ورایدونک باشد ز کارآگهان",
      "m2": "که بشمرد خواهد سپه را نهان",
      "verse_number": 9
    },
    {
      "id": "1f8a2102-30bb-47c2-9cc6-55c67fe84415",
      "m1": "همانجا بدونیم باید زدن",
      "m2": "فروهشتن از کوه و باز آمدن",
      "verse_number": 10
    },
    {
      "id": "c439c93d-6dcb-43f0-ac63-f8d0bbb621b7",
      "m1": "بسالار بهرام گودرز گفت",
      "m2": "که این کار بر من نشاید نهفت",
      "verse_number": 11
    },
    {
      "id": "b04902fa-9f34-4a5f-9eed-7a8d27d78dc4",
      "m1": "روم هرچ گفتی بجای آورم",
      "m2": "سر کوه یکسر بپای آورم",
      "verse_number": 12
    },
    {
      "id": "53611e63-3163-478b-ad18-7752ec00e27c",
      "m1": "بزد اسپ و راند از میان گروه",
      "m2": "پراندیشه بنهاد سر سوی کوه",
      "verse_number": 13
    },
    {
      "id": "0d7dcecb-2f2d-413a-bd4b-94b87199fd9d",
      "m1": "چنین گفت پس نامور با تخوار",
      "m2": "که این کیست کامد چنین خوارخوار",
      "verse_number": 14
    },
    {
      "id": "de25c62f-331a-4b31-963a-9285538997b1",
      "m1": "همانانیندیشد از ما همی",
      "m2": "بتندی برآید ببالا همی",
      "verse_number": 15
    },
    {
      "id": "fe49b7d0-2b29-424b-ab15-98e41e323a92",
      "m1": "یکی بارهای برنشسته سمند",
      "m2": "بفتراک بربسته دارد کمند",
      "verse_number": 16
    },
    {
      "id": "7daae6cd-c107-475b-8548-717ef9278140",
      "m1": "چنین گفت پس رایزن با فرود",
      "m2": "که این را بتندی نباید بسود",
      "verse_number": 17
    },
    {
      "id": "480ded9d-9410-450d-bf16-da98943a79e5",
      "m1": "بنام و نشانش ندانم همی",
      "m2": "ز گودرزیانش گمانم همی",
      "verse_number": 18
    },
    {
      "id": "565b3824-da51-4e57-846c-afbe1a0b4a41",
      "m1": "چو خسرو ز توران بایران رسید",
      "m2": "یکی مغفر شاه شد ناپدید",
      "verse_number": 19
    },
    {
      "id": "941d12a5-ba94-486f-b277-634c8ddac8f4",
      "m1": "گمانی همی آن برم بر سرش",
      "m2": "زره تا میان خسروانی برش",
      "verse_number": 20
    },
    {
      "id": "4fd7b5b0-0df7-49a7-96cb-e921eb1b0f70",
      "m1": "ز گودرز دارد همانا نژاد",
      "m2": "یکی لب بپرسش بباید گشاد",
      "verse_number": 21
    },
    {
      "id": "030de8c1-7564-4830-8cf9-6d8165ac0630",
      "m1": "چو بهرام بر شد ببالای تیغ",
      "m2": "بغرید برسان غرنده میغ",
      "verse_number": 22
    },
    {
      "id": "e26a6d85-bb19-427b-b403-87d1a743c93e",
      "m1": "چه مردی بدو گفت بر کوهسار",
      "m2": "نبینی همی لشکر بیشمار",
      "verse_number": 23
    },
    {
      "id": "c712f026-ba1e-4d99-a47e-2c3fc561fbbd",
      "m1": "همی نشنوی نالهٔ بوق و کوس",
      "m2": "نترسی ز سالار بیدار طوس",
      "verse_number": 24
    },
    {
      "id": "6c2f9846-345d-4ee1-af46-91ee907acf99",
      "m1": "فرودش چنین پاسخ آورد باز",
      "m2": "که تندی ندیدی تو تندی مساز",
      "verse_number": 25
    },
    {
      "id": "08a0bf9e-7bb4-4c61-bce5-9670864caf29",
      "m1": "سخن نرم گوی ای جهاندیده مرد",
      "m2": "میارای لب را بگفتار سرد",
      "verse_number": 26
    },
    {
      "id": "b416aace-8a61-4242-a668-fc4b077f3f3c",
      "m1": "نه تو شیر جنگی و من گور دشت",
      "m2": "برین گونه بر ما نشاید گذشت",
      "verse_number": 27
    },
    {
      "id": "3c2314d3-4b45-40c7-b586-9e9aecaa7f3e",
      "m1": "فزونی نداری تو چیزی ز من",
      "m2": "بگردی و مردی و نیروی تن",
      "verse_number": 28
    },
    {
      "id": "adf93d4b-acf2-44b3-8e0e-d5b3a5adfb76",
      "m1": "سر و دست و پای و دل و مغز و هوش",
      "m2": "زبانی سراینده و چشم و گوش",
      "verse_number": 29
    },
    {
      "id": "0944f5f4-99c6-4596-8241-42715c2d12fc",
      "m1": "نگه کن بمن تا مرا نیز هست",
      "m2": "اگر هست بیهوده منمای دست",
      "verse_number": 30
    },
    {
      "id": "9232a9d3-60c9-45d8-8fed-bba29ba23dae",
      "m1": "سخن پرسمت گر تو پاسخ دهی",
      "m2": "شوم شاد اگر رای فرخ نهی",
      "verse_number": 31
    },
    {
      "id": "8b297f86-ce26-4b86-85ff-641c888ff38e",
      "m1": "بدو گفت بهرام بر گوی هین",
      "m2": "تو بر آسمانی و من بر زمین",
      "verse_number": 32
    },
    {
      "id": "60a05039-503f-472e-95b0-1d665ddaec09",
      "m1": "فرود آن زمان گفت سالار کیست",
      "m2": "برزم اندرون نامبردار کیست",
      "verse_number": 33
    },
    {
      "id": "e9d9b6b8-3810-4867-af49-85bea9add3ba",
      "m1": "بدو گفت بهرام سالار طوس",
      "m2": "که با اختر کاویانست و کوس",
      "verse_number": 34
    },
    {
      "id": "64a0e33f-494a-4554-b5b6-7a2fbee5d2f7",
      "m1": "ز گردان چو گودرز و رهام و گیو",
      "m2": "چو گرگین و شیدوش و فرهاد نیو",
      "verse_number": 35
    },
    {
      "id": "c7bd54c8-33ed-4294-8ca3-03b9426b3a3c",
      "m1": "چو گستهم و چون زنگهٔ شاوران",
      "m2": "گرازه سر مرد کنداوران",
      "verse_number": 36
    },
    {
      "id": "531252dc-8a2f-4a91-a95f-fb71f4b81840",
      "m1": "بدو گفت کز چه ز بهرام نام",
      "m2": "نبردی و بگذاشتی کار خام",
      "verse_number": 37
    },
    {
      "id": "b7140b09-5456-40b0-931f-a346368408f9",
      "m1": "ز گودرزیان ما بدوییم شاد",
      "m2": "مرا زو نکردی بلب هیچ یاد",
      "verse_number": 38
    },
    {
      "id": "dfbfe50a-55d4-4de3-9f55-47a293b7fecf",
      "m1": "بدو گفت بهرام کای شیرمرد",
      "m2": "چنین یاد بهرام با تو که کرد",
      "verse_number": 39
    },
    {
      "id": "8d8555b4-61dc-4aba-8fa9-e509f3044955",
      "m1": "چنین داد پاسخ مر او را فرود",
      "m2": "که این داستان من ز مادر شنود",
      "verse_number": 40
    },
    {
      "id": "c9994cc0-20a7-40b4-ad6c-d324e3919eec",
      "m1": "مرا گفت چون پیشت آید سپاه",
      "m2": "پذیره شو و نام بهرام خواه",
      "verse_number": 41
    },
    {
      "id": "ef53e0ef-aac1-49d7-aa73-82f35f411b94",
      "m1": "دگر نامداری ز کنداوران",
      "m2": "کجا نام او زنگهٔ شاوران",
      "verse_number": 42
    },
    {
      "id": "f15e4b33-b3da-4116-bdc2-40640b19aba7",
      "m1": "همانند همشیرگان پدر",
      "m2": "سزد گر بر ایشان بجویی گذر",
      "verse_number": 43
    },
    {
      "id": "c62a44a2-966f-4427-9e61-e39fd0a446f2",
      "m1": "بدو گفت بهرام کای نیکبخت",
      "m2": "تویی بار آن خسروانی درخت",
      "verse_number": 44
    },
    {
      "id": "fa80fc7c-d2ba-4ca9-9ec7-847891db1d02",
      "m1": "فرودی تو ای شهریار جوان",
      "m2": "که جاوید بادی به روشنروان",
      "verse_number": 45
    },
    {
      "id": "35755196-21a2-43ed-ac6c-4ed61d143ab6",
      "m1": "بدو گفت کآری فرودم درست",
      "m2": "ازان سرو افگنده شاخی برست",
      "verse_number": 46
    },
    {
      "id": "4503159a-9859-4722-8564-a3c6e968bcb1",
      "m1": "بدو گفت بهرام بنمای تن",
      "m2": "برهنه نشان سیاوش بمن",
      "verse_number": 47
    },
    {
      "id": "77ec6f22-f728-4204-94c5-059486fda053",
      "m1": "به بهرام بنمود بازو فرود",
      "m2": "ز عنبر بگل بر یکی خال بود",
      "verse_number": 48
    },
    {
      "id": "bb9a9457-96c5-4036-9936-4e41b0bc7277",
      "m1": "کزان گونه بتگر بپرگار چین",
      "m2": "نداند نگارید کس بر زمین",
      "verse_number": 49
    },
    {
      "id": "c4d4afbe-e271-44e5-aeb6-88ec5e7d0a46",
      "m1": "بدانست کو از نژاد قباد",
      "m2": "ز تخم سیاووش دارد نژاد",
      "verse_number": 50
    },
    {
      "id": "a1f2c0c3-48d0-4458-a32e-c6498a0bacb4",
      "m1": "برو آفرین کرد و بردش نماز",
      "m2": "برآمد ببالای تند و دراز",
      "verse_number": 51
    },
    {
      "id": "211b711a-f75c-422d-a210-2499cf8f90c8",
      "m1": "فرود آمد از اسپ شاه جوان",
      "m2": "نشست از بر سنگ روشنروان",
      "verse_number": 52
    },
    {
      "id": "38410afd-2fd1-4837-a4c6-b99f3a544c81",
      "m1": "ببهرام گفت ای سرافراز مرد",
      "m2": "جهاندار و بیدار و شیر نبرد",
      "verse_number": 53
    },
    {
      "id": "0350ffbb-ef06-4752-ab60-dc07ab1e1adb",
      "m1": "دو چشم من ار زنده دیدی پدر",
      "m2": "همانا نگشتی ازین شادتر",
      "verse_number": 54
    },
    {
      "id": "2453d1b3-3e63-4fbb-a758-6b8eddddb8d7",
      "m1": "که دیدم ترا شاد و روشنروان",
      "m2": "هنرمند و بینادل و پهلوان",
      "verse_number": 55
    },
    {
      "id": "794da25f-87fd-40b1-ba36-ff2f3297623e",
      "m1": "بدان آمدستم بدین تیغکوه",
      "m2": "که از نامداران ایران گروه",
      "verse_number": 56
    },
    {
      "id": "aa7e13cf-cbeb-428e-94ed-74b63bb02b75",
      "m1": "بپرسم ز مردی که سالار کیست",
      "m2": "برزم اندرون نامبردار کیست",
      "verse_number": 57
    },
    {
      "id": "02a099ca-03b4-4efe-bb4a-79269a153ff9",
      "m1": "یکی سور سازم چنانچون توان",
      "m2": "ببینم بشادی رخ پهلوان",
      "verse_number": 58
    },
    {
      "id": "e66e7b64-2e73-400e-b209-c638ff895763",
      "m1": "ز اسپ و ز شمشیر و گرز و کمر",
      "m2": "ببخشم ز هر چیز بسیار مر",
      "verse_number": 59
    },
    {
      "id": "a58aa252-a403-4f57-9528-65d1af2ad034",
      "m1": "وزان پس گرایم به پیش سپاه",
      "m2": "بتوران شوم داغدل کینهخواه",
      "verse_number": 60
    },
    {
      "id": "f172cf03-3487-4a7b-99f7-e466da35c68f",
      "m1": "سزاوار این جستن کین منم",
      "m2": "بجنگ آتش تیز برزین منم",
      "verse_number": 61
    },
    {
      "id": "4d99adfb-ef0a-44cc-ae72-2af82b9a8a4e",
      "m1": "سزد گر بگویی تو با پهلوان",
      "m2": "که آید برین سنگ روشنروان",
      "verse_number": 62
    },
    {
      "id": "37c7c010-207b-4bf8-bf6a-b70a52d6b64b",
      "m1": "بباشیم یک هفته ایدر بهم",
      "m2": "سگالیم هرگونه از بیش و کم",
      "verse_number": 63
    },
    {
      "id": "c73ae05a-07ec-473c-b870-f5eed33ce053",
      "m1": "به هشتم چو برخیزد آوای کوس",
      "m2": "بزین اندر آید سپهدار طوس",
      "verse_number": 64
    },
    {
      "id": "6fa0e7d3-ac37-43a7-9d58-d6fa791f643a",
      "m1": "میان را ببندم بکین پدر",
      "m2": "یکی جنگ سازم بدرد جگر",
      "verse_number": 65
    },
    {
      "id": "c0cb73be-f06a-4bee-b5a4-e7a0cfc8b9fb",
      "m1": "که با شیر جنگ آشنایی دهد",
      "m2": "ز نر پر کرگس گوایی دهد",
      "verse_number": 66
    },
    {
      "id": "5ccfe3b1-92c4-47f7-9235-f3abf20db7a3",
      "m1": "که اندر جهان کینه را زین نشان",
      "m2": "نبندد میان کس ز گردنکشان",
      "verse_number": 67
    },
    {
      "id": "118c86fa-fbf0-462f-bbcc-61a0eb954b4a",
      "m1": "بدو گفت بهرام کای شهریار",
      "m2": "جوان و هنرمند و گرد و سوار",
      "verse_number": 68
    },
    {
      "id": "b3579c77-d05c-445b-9b81-7e8df5063f2f",
      "m1": "بگویم من این هرچ گفتی بطوس",
      "m2": "بخواهش دهم نیز بر دست بوس",
      "verse_number": 69
    },
    {
      "id": "d58e3924-5f27-4be3-86f7-87e8e2eae85a",
      "m1": "ولیکن سپهبد خردمند نیست",
      "m2": "سر و مغز او از در پند نیست",
      "verse_number": 70
    },
    {
      "id": "5454db01-95c1-4ecf-b644-a12de0ba61d3",
      "m1": "هنر دارد و خواسته هم نژاد",
      "m2": "نیارد همی بر دل از شاه یاد",
      "verse_number": 71
    },
    {
      "id": "21c7a6b8-8ecf-4200-ae55-f42c768e6f06",
      "m1": "بشورید با گیو و گودرز و شاه",
      "m2": "ز بهر فریبرز و تخت و کلاه",
      "verse_number": 72
    },
    {
      "id": "8fb095d2-6d76-4274-ab66-2a34877e0d58",
      "m1": "همی گوید از تخمهٔ نوذرم",
      "m2": "جهان را بشاهی خود اندر خورم",
      "verse_number": 73
    },
    {
      "id": "826476cf-5c34-4f67-b218-d66518987200",
      "m1": "سزد گر بپیچد ز گفتار من",
      "m2": "گراید بتندی ز کردار من",
      "verse_number": 74
    },
    {
      "id": "66eeb3e7-7352-495e-aaa4-1a4c9c867d35",
      "m1": "جز از من هرآنکس که آید برت",
      "m2": "نباید که بیند سر و مغفرت",
      "verse_number": 75
    },
    {
      "id": "0defa551-15a7-4eb8-99af-0b13e5bc8307",
      "m1": "که خودکامه مردیست بی تار و پود",
      "m2": "کسی دیگر آید نیارد درود",
      "verse_number": 76
    },
    {
      "id": "450f653e-fbc4-42ed-8e31-34e492e0000b",
      "m1": "و دیگر که با ما دلش نیست راست",
      "m2": "که شاهی همی با فریبرز خواست",
      "verse_number": 77
    },
    {
      "id": "a4a8b1c2-d458-496d-a2af-41ae300aa60e",
      "m1": "مرا گفت بنگر که بر کوه کیست",
      "m2": "چو رفتی مپرسش که از بهر چیست",
      "verse_number": 78
    },
    {
      "id": "6ab7335b-49e9-42b9-a5db-e61e036ab862",
      "m1": "بگرز و بخنجر سخن گوی و بس",
      "m2": "چرا باشد این روز بر کوهکس",
      "verse_number": 79
    },
    {
      "id": "acff9d83-5db1-4c3f-a5f5-073f9efb0941",
      "m1": "بمژده من آیم چنو گشت رام",
      "m2": "ترا پیش لشکر برم شادکام",
      "verse_number": 80
    },
    {
      "id": "a0c9424c-792e-487d-9bb3-d3075cb8a7c8",
      "m1": "وگر جز ز من دیگر آید کسی",
      "m2": "نباید بدو بودن ایمن بسی",
      "verse_number": 81
    },
    {
      "id": "50c9d955-d4da-4e1a-89aa-e9ab3c25aadc",
      "m1": "نیاید بر تو به جز یک سوار",
      "m2": "چنینست آیین این نامدار",
      "verse_number": 82
    },
    {
      "id": "18dc6e28-4a4a-4767-b319-45b05f723155",
      "m1": "چو آید ببین تا چه آیدت رای",
      "m2": "در دژ ببند و مپرداز جای",
      "verse_number": 83
    },
    {
      "id": "b321af45-efbd-4e7f-945c-a6195bba565a",
      "m1": "یکی گرز پیروزه دسته بزر",
      "m2": "فرود آن زمان برکشید از کمر",
      "verse_number": 84
    },
    {
      "id": "6917a338-9ff0-46c3-8797-d688de0c90ca",
      "m1": "بدو داد و گفت این ز من یادگار",
      "m2": "همی دار تا خودکی آید بکار",
      "verse_number": 85
    },
    {
      "id": "7c436963-12bb-46a5-a30a-5ba754d2f6e4",
      "m1": "چو طوس سپهبد پذیرد خرام",
      "m2": "بباشیم روشندل و شادکام",
      "verse_number": 86
    },
    {
      "id": "6acb4338-9fcc-4ef2-a5de-d58367ff34a7",
      "m1": "جزین هدیهها باشد و اسپ و زین",
      "m2": "بزر افسر و خسروانی نگین",
      "verse_number": 87
    }
  ],
