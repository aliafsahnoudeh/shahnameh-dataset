{
  "id": "13bcc9c9-d5d0-4f47-96e8-19a31c6ffa24",
  "title": "بخش ۲۱",
  "verses": [
    {
      "id": "f046a3b1-fb64-48e7-a7c9-f3a97a427bba",
      "m1": "فریبرز بنهاد بر سر کلاه",
      "m2": "که هم پهلوان بود و هم پور شاه",
      "verse_number": 1
    },
    {
      "id": "6d311c69-6489-44a0-8776-fc0a2132a49c",
      "m1": "ازان پس بفرمود رهام را",
      "m2": "که پیدا کند با گهر نام را",
      "verse_number": 2
    },
    {
      "id": "fc880c6d-7ea9-42b1-976e-df960e3ebb9f",
      "m1": "بدو گفت رو پیش پیران خرام",
      "m2": "ز من نزد آن پهلوان بر پیام",
      "verse_number": 3
    },
    {
      "id": "bfb0286a-c610-467b-aa22-e5e322b1a2d7",
      "m1": "بگویش که کردار گردان سپهر",
      "m2": "همیشه چنین بود پر درد و مهر",
      "verse_number": 4
    },
    {
      "id": "748d4626-b7a8-4fcc-a3cb-170082113740",
      "m1": "یکی را برآرد بچرخ بلند",
      "m2": "یکی را کند زار و خوار و نژند",
      "verse_number": 5
    },
    {
      "id": "a1b68f6d-ed05-4589-981d-e94fc5ed3ed7",
      "m1": "کسی کو بلاجست گرد آن بود",
      "m2": "شبیخون نه کردار مردان بود",
      "verse_number": 6
    },
    {
      "id": "3a28d6cd-e66c-4094-890a-c9f9a3055d50",
      "m1": "شبیخون نسازند کنداوران",
      "m2": "کسی کو گراید بگرز گران",
      "verse_number": 7
    },
    {
      "id": "e1b96c90-53ee-4970-a2b9-652a88ac5dd0",
      "m1": "تو گر با درنگی درنگ آوریم",
      "m2": "گرت رای جنگست جنگ آوریم",
      "verse_number": 8
    },
    {
      "id": "3ef7b892-1249-4b9a-bb8d-1385304d9141",
      "m1": "ز پیش فریبرز رهام گرد",
      "m2": "برون رفت و پیغام و نامه ببرد",
      "verse_number": 9
    },
    {
      "id": "1d55be69-cb2d-40c8-ac27-4d55ba29de59",
      "m1": "بیامد طلایه بدیدش براه",
      "m2": "بپرسیدش از نام وز جایگاه",
      "verse_number": 10
    },
    {
      "id": "f887db79-8873-4532-907f-20f6dc6820e6",
      "m1": "بدو گفت رهام جنگی منم",
      "m2": "هنرمند و بیدار و سنگی منم",
      "verse_number": 11
    },
    {
      "id": "3bacb482-9d3c-4d75-910b-b134773c7688",
      "m1": "پیام فریبرز کاوس شاه",
      "m2": "به پیران رسانم بدین رزمگاه",
      "verse_number": 12
    },
    {
      "id": "5574c257-10aa-4506-85c5-8ed39fe0d154",
      "m1": "ز پیش طلایه سواری چو گرد",
      "m2": "بیامد سخنها همه یاد کرد",
      "verse_number": 13
    },
    {
      "id": "fbff9ced-a71b-4a99-a205-e33601da1a3e",
      "m1": "که رهام گودرز زان رزمگاه",
      "m2": "بیامد سوی پهلوان سپاه",
      "verse_number": 14
    },
    {
      "id": "1257124d-7b40-4b0b-bbae-c4add62d8ee5",
      "m1": "بفرمود تا پیش اوی آورند",
      "m2": "گشادهدل و تازهروی آورند",
      "verse_number": 15
    },
    {
      "id": "bb39df1f-3766-4cee-bdfc-aea61df18df1",
      "m1": "سراینده رهام شد پیش اوی",
      "m2": "بترس از نهان بداندیش اوی",
      "verse_number": 16
    },
    {
      "id": "9c62fbca-d465-4a01-bc65-0f9a062b7aad",
      "m1": "چو پیران ورا دید بنواختش",
      "m2": "بپرسید و بر تخت بنشاختش",
      "verse_number": 17
    },
    {
      "id": "a0c5c2ed-d80f-4931-be69-45ae9b03ff9f",
      "m1": "برآورد رهام راز از نهفت",
      "m2": "پیام فریبرز با او بگفت",
      "verse_number": 18
    },
    {
      "id": "7207967d-9950-4349-a73c-3bb0d04fc1aa",
      "m1": "چنین گفت پیران برهام گرد",
      "m2": "که این جنگ را خرد نتوان شمرد",
      "verse_number": 19
    },
    {
      "id": "d740b962-cdc0-4815-a239-068db174cbb4",
      "m1": "شما را بد این پیش دستی بجنگ",
      "m2": "ندیدیم با طوس رای و درنگ",
      "verse_number": 20
    },
    {
      "id": "2cb37095-004e-4755-ad32-fce98a144b2b",
      "m1": "بمرز اندر آمد چو گرگ سترگ",
      "m2": "همی کشت بیباک خرد و بزرگ",
      "verse_number": 21
    },
    {
      "id": "fca847f9-3937-4fbe-8993-98b933ef59e5",
      "m1": "چه مایه بکشت و چه مایه ببرد",
      "m2": "بدو نیک این مرز یکسان شمرد",
      "verse_number": 22
    },
    {
      "id": "12d4dad4-8e50-49c1-aedc-0d81ba56475b",
      "m1": "مکافات این بد کنون یافتند",
      "m2": "اگر چند با کینه بشتافتند",
      "verse_number": 23
    },
    {
      "id": "9aadf2d9-0547-480b-ae70-a9800142f3db",
      "m1": "کنون گر تویی پهلوان سپاه",
      "m2": "چنانچون ترا باید از من بخواه",
      "verse_number": 24
    },
    {
      "id": "d10b3189-2a24-4a8f-aef0-ffe6290efad8",
      "m1": "گر ایدونک یک ماه خواهی درنگ",
      "m2": "ز لشکر نیاید سواری بجنگ",
      "verse_number": 25
    },
    {
      "id": "9830d1e4-e45a-4003-ac96-a14da8f0ee03",
      "m1": "وگر جنگ جویی منم برکنار",
      "m2": "بیارای و برکش صف کارزار",
      "verse_number": 26
    },
    {
      "id": "566446f4-c831-49ba-94c2-bae4343b7e89",
      "m1": "چو یک مه بدین آرزو بشمرید",
      "m2": "که از مرز تورانزمین بگذرید",
      "verse_number": 27
    },
    {
      "id": "07c1716c-2021-4483-8b9f-8976c3a50853",
      "m1": "برانید لشکر سوی مرز خویش",
      "m2": "ببینید یکسر همه ارز خویش",
      "verse_number": 28
    },
    {
      "id": "43c526a9-e479-4f8a-801e-61a938780a2d",
      "m1": "وگرنه بجنگ اندر آرید چنگ",
      "m2": "مخواهید زین پس زمان و درنگ",
      "verse_number": 29
    },
    {
      "id": "4716cdf5-f346-4be4-b5da-c277de0b3b70",
      "m1": "یکی خلعت آراست رهام را",
      "m2": "چنانچون بود درخور نام را",
      "verse_number": 30
    },
    {
      "id": "b3a5bea6-d5d8-4738-97c0-bc294946c664",
      "m1": "بنزد فریبرز رهام گرد",
      "m2": "بیاورد نامه چنانچون ببرد",
      "verse_number": 31
    },
    {
      "id": "6e24fd55-62a7-4b93-9435-17773a3f665b",
      "m1": "فریبرز چون یافت روز درنگ",
      "m2": "بهر سو بیازید چون شیرچنگ",
      "verse_number": 32
    },
    {
      "id": "ef919ea4-eef3-4d45-a3c2-e501faf91980",
      "m1": "سر بدرهها را گشادن گرفت",
      "m2": "نهاده همه رای دادن گرفت",
      "verse_number": 33
    },
    {
      "id": "b6105556-73da-4920-85b7-042496b7b2ca",
      "m1": "کشیدند و لشکر بیاراستند",
      "m2": "ز هر چیز لختی بپیراستند",
      "verse_number": 34
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 34
  },
  "order_in_parent": 21
}