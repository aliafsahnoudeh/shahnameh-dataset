{
  "id": "b5541279-1845-489c-b633-9d6c465f49dd",
  "title": "بخش ۲۵",
  "verses": [
    {
      "id": "0fca01bc-41c8-486a-b17a-1ac05bd2c9ff",
      "m1": "چو برزد سر از کوه تابنده شید",
      "m2": "برآمد سر تاج روز سپید",
      "verse_number": 1
    },
    {
      "id": "3f0aa5bb-c011-417a-aea3-d1aabc50948d",
      "m1": "سپاه پراگنده گردآمدند",
      "m2": "همی هر کسی داستانها زدند",
      "verse_number": 2
    },
    {
      "id": "1e7b6f7a-c2eb-45f7-ad34-b9d59fb8afa1",
      "m1": "که چندین ز ایرانیان کشته شد",
      "m2": "سربخت سالار برگشته شد",
      "verse_number": 3
    },
    {
      "id": "2e128be4-05ea-43c4-8b90-35fd4b163bfe",
      "m1": "چنین چیره شد دست ترکان بجنگ",
      "m2": "سپه را کنون نیست جای درنگ",
      "verse_number": 4
    },
    {
      "id": "8aeb7639-606e-4072-8671-9bcafdf38845",
      "m1": "بر شاه باید شدن بیگمان",
      "m2": "ببینیم تا بر چه گردد زمان",
      "verse_number": 5
    },
    {
      "id": "fdd4ae18-5ecb-4922-878c-ac385fc5648b",
      "m1": "اگر شاه را دل پر از جنگ نیست",
      "m2": "مرا و تو را جای آهنگ نیست",
      "verse_number": 6
    },
    {
      "id": "b43958af-4114-4c2e-bcb2-a0ab110f40cf",
      "m1": "پسر بیپدر شد پدر بیپسر",
      "m2": "بشد کشته و زنده خسته جگر",
      "verse_number": 7
    },
    {
      "id": "b50a8b9f-26b8-474a-9b31-3bc19afbb1f8",
      "m1": "اگر جنگ فرمان دهد شهریار",
      "m2": "بسازد یکی لشکر نامدار",
      "verse_number": 8
    },
    {
      "id": "a4228cb7-1e8a-4837-8b53-25aa3a836b11",
      "m1": "بیاییم و دلها پر از کین و جنگ",
      "m2": "کنیم این جهان بر بداندیش تنگ",
      "verse_number": 9
    },
    {
      "id": "9c9d5e7b-b57d-426b-9aa9-39ef757bb31d",
      "m1": "برین رای زان مرز گشتند باز",
      "m2": "همه دل پر از خون و جان پر گداز",
      "verse_number": 10
    },
    {
      "id": "dbb7dec5-667a-44ce-a946-caafb63d49ff",
      "m1": "برادر ز خون برادر به درد",
      "m2": "زبانشان ز خویشان پر از یاد کرد",
      "verse_number": 11
    },
    {
      "id": "c383a3bf-14fc-4d96-befe-f72c123588f7",
      "m1": "برفتند یکسر سوی کاسه رود",
      "m2": "روانشان ازان کشتگان پر درود",
      "verse_number": 12
    },
    {
      "id": "92a6e81d-0b70-48bf-b410-1529d5a2930a",
      "m1": "طلایه بیامد بپیش سپاه",
      "m2": "کسی را ندید اندران جایگاه",
      "verse_number": 13
    },
    {
      "id": "aa048753-d6a1-4011-b6de-9362e6079be7",
      "m1": "بپیران فرستاد زود آگهی",
      "m2": "کز ایرانیان گشت گیتی تهی",
      "verse_number": 14
    },
    {
      "id": "15183e71-5c74-4426-9e7d-d85c44785acc",
      "m1": "چو بشنید پیران هم اندر زمان",
      "m2": "بهر سو فرستاد کارآگهان",
      "verse_number": 15
    },
    {
      "id": "44121190-25e1-4685-8b5b-27c653a95f2e",
      "m1": "چو برگشتن مهتران شد درست",
      "m2": "سپهبد روان را ز انده بشست",
      "verse_number": 16
    },
    {
      "id": "98ec367e-5a4c-427d-9421-ff5e390a1a30",
      "m1": "بیامد بشبگیر خود با سپاه",
      "m2": "همی گشت بر گرد آن رزمگاه",
      "verse_number": 17
    },
    {
      "id": "9c9c12be-b544-4f34-9279-877bc0336f02",
      "m1": "همه کوه و هم دشت و هامون و راغ",
      "m2": "سراپرده و خیمه بد همچو باغ",
      "verse_number": 18
    },
    {
      "id": "2adf7a13-00b9-4619-a186-a7978b730eac",
      "m1": "بلشکر ببخشید خود برگرفت",
      "m2": "ز کار جهان مانده اندر شگفت",
      "verse_number": 19
    },
    {
      "id": "99476c01-1256-4a76-b0fd-f3df90b56b2b",
      "m1": "که روزی فرازست و روزی نشیب",
      "m2": "گهی شاد دارد گهی با نهیب",
      "verse_number": 20
    },
    {
      "id": "2ffdab7a-3fdf-4af8-b45f-ffccdbc3de21",
      "m1": "همان به که با جام مانیم روز",
      "m2": "همی بگذرانیم روزی بروز",
      "verse_number": 21
    },
    {
      "id": "a0f8aa48-0a4c-4839-a06c-ba435ae4a916",
      "m1": "بدان آگهی نزد افراسیاب",
      "m2": "هیونی برافگند هنگام خواب",
      "verse_number": 22
    },
    {
      "id": "3695743a-5a09-4d71-b0bb-c3d949f83f81",
      "m1": "سپهبد بدان آگهی شاد شد",
      "m2": "ز تیمار و درددل آزاد شد",
      "verse_number": 23
    },
    {
      "id": "f4564d48-ba27-479e-bc57-4c19604147ea",
      "m1": "همه لشکرش گشته روشنروان",
      "m2": "ببستند آیین ره پهلوان",
      "verse_number": 24
    },
    {
      "id": "239ff505-06e7-466d-8c84-e8d495a3ebc9",
      "m1": "همه جامهٔ زینت آویختند",
      "m2": "درم بر سر او همی ریختند",
      "verse_number": 25
    },
    {
      "id": "8a2efe7c-bd28-4d5a-bada-f1e88de520d6",
      "m1": "چو آمد بنزدیکی شهر شاه",
      "m2": "سپهبد پذیره شدش با سپاه",
      "verse_number": 26
    },
    {
      "id": "95264ba0-b395-4e23-a50b-dc5016cc26a2",
      "m1": "برو آفرین کرد بسیار و گفت",
      "m2": "که از پهلوانان ترا نیست جفت",
      "verse_number": 27
    },
    {
      "id": "ff093a88-c61b-40b7-bbe9-3e8c5f418ae5",
      "m1": "دو هفته ز ایوان افراسیاب",
      "m2": "همی بر شد آواز چنگ و رباب",
      "verse_number": 28
    },
    {
      "id": "a4be2afa-3a33-4a55-ac3d-37cdec38866f",
      "m1": "سیم هفته پیران چنان کرد رای",
      "m2": "که با شادمانی شود باز جای",
      "verse_number": 29
    },
    {
      "id": "c9d741ee-0282-4e58-8f02-e4affb0eb877",
      "m1": "یکی خلعت آراست افراسیاب",
      "m2": "که گر برشماری بگیرد شتاب",
      "verse_number": 30
    },
    {
      "id": "f2849f8f-9a23-4341-986b-c2376463f8f8",
      "m1": "ز دینار وز گوهر شاهوار",
      "m2": "ز زرین کمرهای گوهرنگار",
      "verse_number": 31
    },
    {
      "id": "6e661a1b-a93d-4685-882f-981d12f65d7a",
      "m1": "از اسپان تازی بزرین ستام",
      "m2": "ز شمشیر هندی بزرین نیام",
      "verse_number": 32
    },
    {
      "id": "2b9c72a4-7a00-470c-b0c0-a40d8d72352a",
      "m1": "یکی تخت پرمایه از عاج و ساج",
      "m2": "ز پیروزه مهد و ز بیجاده تاج",
      "verse_number": 33
    },
    {
      "id": "a5636cce-553d-4fcd-ad53-f6d41296d918",
      "m1": "پرستار چینی و رومی غلام",
      "m2": "پر از مشک و عنبر دو پیروزه جام",
      "verse_number": 34
    },
    {
      "id": "281b7ad0-2cae-4362-a5d1-63fc09faee37",
      "m1": "بنزدیک پیران فرستاد چیز",
      "m2": "ازان پس بسی پندها داد نیز",
      "verse_number": 35
    },
    {
      "id": "a8b12a0d-b4cf-4671-abfb-9e3760d98c93",
      "m1": "که با موبدان باش و بیدار باش",
      "m2": "سپه را ز دشمن نگهدار باش",
      "verse_number": 36
    },
    {
      "id": "4ce49c8a-4d8a-493b-9260-12ad14f42049",
      "m1": "نگه کن خردمند کارآگهان",
      "m2": "بهرجای بفرست گرد جهان",
      "verse_number": 37
    },
    {
      "id": "d69f3911-6133-4bf9-b87c-692ece751703",
      "m1": "که کیخسرو امروز با خواستست",
      "m2": "بداد و دهش گیتی آراستست",
      "verse_number": 38
    },
    {
      "id": "0508f9cd-de64-434b-9c18-9591260e4e55",
      "m1": "نژاد و بزرگی و تخت و کلاه",
      "m2": "چو شد گرد ازین بیش چیزی مخواه",
      "verse_number": 39
    },
    {
      "id": "8cd57d3b-77a2-4e22-aaa6-9b159fb3ce9f",
      "m1": "ز برگشتن دشمن ایمن مشو",
      "m2": "زمان تا زمان آگهی خواه نو",
      "verse_number": 40
    },
    {
      "id": "e76df168-4522-497f-b64b-5b51ce93342a",
      "m1": "بجایی که رستم بود پهلوان",
      "m2": "تو ایمن بخسپی بپیچد روان",
      "verse_number": 41
    },
    {
      "id": "2dc86cf3-850b-4db0-805b-d9c4248ab50f",
      "m1": "پذیرفت پیران همه پند اوی",
      "m2": "که سالار او بود و پیوند اوی",
      "verse_number": 42
    },
    {
      "id": "9c02c684-6e9a-4ca7-87f5-2dda646dc751",
      "m1": "سپهدار پیران و آن انجمن",
      "m2": "نهادند سر سوی راه ختن",
      "verse_number": 43
    },
    {
      "id": "66e3fca1-52a0-4bfb-9294-0d3e390e8ae0",
      "m1": "بپای آمد این داستان فرود",
      "m2": "کنون رزم کاموس باید سرود",
      "verse_number": 44
    }
  ],
  "poem_info": {
