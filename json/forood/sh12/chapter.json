{
  "id": "4f77221d-95ad-4bb5-8425-3d320a542427",
  "title": "بخش ۱۲",
  "verses": [
    {
      "id": "3db368d2-7640-4274-8144-ce31bab1f746",
      "m1": "همی گفت و جوشن همی بست گرم",
      "m2": "همی بر تنش بر بدرید چرم",
      "verse_number": 1
    },
    {
      "id": "225ff0ce-94b5-49ac-aec9-175568b4b11e",
      "m1": "نشست از بر اژدهای دژم",
      "m2": "خرامان بیامد براه چرم",
      "verse_number": 2
    },
    {
      "id": "7cd43fb2-44c6-4640-b1d4-f1cffdec0a7c",
      "m1": "فرود سیاوش چو او را بدید",
      "m2": "یکی باد سرد از جگر برکشید",
      "verse_number": 3
    },
    {
      "id": "9eb9e277-8a71-4808-9363-9bf01472a3e5",
      "m1": "همی گفت کین لشکر رزمساز",
      "m2": "ندانند راه نشیب و فراز",
      "verse_number": 4
    },
    {
      "id": "32918f8d-73d8-4068-a271-9f530e2aaaab",
      "m1": "همه یک ز دیگر دلاورترند",
      "m2": "چو خورشید تابان بدو پیکرند",
      "verse_number": 5
    },
    {
      "id": "a2fc0303-4936-4abf-a000-b60b5d21ae94",
      "m1": "ولیکن خرد نیست با پهلوان",
      "m2": "سر بیخرد چون تن بیروان",
      "verse_number": 6
    },
    {
      "id": "9484e4a6-7bbb-41ec-9c30-de0621818dd4",
      "m1": "نباشند پیروز ترسم بکین",
      "m2": "مگر خسرو آید بتوران زمین",
      "verse_number": 7
    },
    {
      "id": "e76b583d-c5c0-4c64-963e-87d4353d08cb",
      "m1": "بکین پدر جمله پشت آوریم",
      "m2": "مگر دشمنان را به مشت آوریم",
      "verse_number": 8
    },
    {
      "id": "2b7c67bf-80a3-48c8-9f5a-388d69145895",
      "m1": "بگوکین سوار سرافراز کیست",
      "m2": "که بر دست و تیغش بباید گریست",
      "verse_number": 9
    },
    {
      "id": "da1c490f-1c4a-4131-a80d-c12abfd4c6dd",
      "m1": "نگه کرد ز افراز بالا تخوار",
      "m2": "ببی دانشی بر چمن رست خار",
      "verse_number": 10
    },
    {
      "id": "d9297892-36c6-4dcc-8923-5f91ff7f4962",
      "m1": "بدو گفت کین اژدهای دژم",
      "m2": "که مرغ از هوا اندر آرد بدم",
      "verse_number": 11
    },
    {
      "id": "50059c6f-eb6a-4e69-b720-23eff0f3498b",
      "m1": "که دست نیای تو پیران ببست",
      "m2": "دو لشکر ز ترکان بهم برشکست",
      "verse_number": 12
    },
    {
      "id": "4ebefd1d-6d7c-4b16-a322-9e474f0a5fe9",
      "m1": "بسی بیپدر کرد فرزند خرد",
      "m2": "بسی کوه و رود و بیابان سپرد",
      "verse_number": 13
    },
    {
      "id": "e86e7661-2c9a-4dba-86c8-94d3dd6b5887",
      "m1": "پدر نیز ازو شد بسی بیپسر",
      "m2": "بپی بسپرد گردن شیر نر",
      "verse_number": 14
    },
    {
      "id": "cc2ad971-cb6d-4ba7-9573-77a55c025cf5",
      "m1": "بایران برادرت را او کشید",
      "m2": "بجیحون گذر کرد و کشتی ندید",
      "verse_number": 15
    },
    {
      "id": "29c56c3d-0d11-4695-9cdf-92f269ba0136",
      "m1": "وراگیو خوانند پیلست و بس",
      "m2": "که در رزم دریای نیلست و بس",
      "verse_number": 16
    },
    {
      "id": "d121b49c-6aae-4712-884c-39d5d2c964a5",
      "m1": "چو بر زه بشست اندر آری گره",
      "m2": "خدنگت نیابد گذر بر زره",
      "verse_number": 17
    },
    {
      "id": "9180a6f9-6c85-45b8-ae9a-524be8aaf876",
      "m1": "سلیح سیاوش بپوشد بجنگ",
      "m2": "نترسد ز پیکان تیر خدنگ",
      "verse_number": 18
    },
    {
      "id": "6849bb96-b304-4c18-9363-b2e28ec01959",
      "m1": "بکش چرخ و پیکان سوی اسپ ران",
      "m2": "مگر خسته گردد هیون گران",
      "verse_number": 19
    },
    {
      "id": "406faa02-7dad-43a4-ba3e-7d4af135bf75",
      "m1": "پیاده شود بازگردد مگر",
      "m2": "کشان چون سپهبد بگردن سپر",
      "verse_number": 20
    },
    {
      "id": "9dd6ae55-6d0d-43ba-a3d3-b76ef045b4a2",
      "m1": "کمان را بزه کرد جنگی فرود",
      "m2": "پس آن قبضهٔ چرخ بر کف بسود",
      "verse_number": 21
    },
    {
      "id": "e31a7af7-fbf7-49a0-a8d9-b906e4b3d21d",
      "m1": "بزد تیر بر سینهٔ اسپ گیو",
      "m2": "فرود آمد از باره برگشت نیو",
      "verse_number": 22
    },
    {
      "id": "12a7c1cb-5e0f-4538-8296-1b76b1466fab",
      "m1": "ز بام سپد کوه خنده بخاست",
      "m2": "همی مغز گیو از گواژه بکاست",
      "verse_number": 23
    },
    {
      "id": "14e05538-37d4-4afc-85b3-13579bb9ba53",
      "m1": "برفتند گردان همه پیش گیو",
      "m2": "که یزدان سپاس ای سپهدار نیو",
      "verse_number": 24
    },
    {
      "id": "73be0284-b6da-483c-a2bd-ddb7393e5b1b",
      "m1": "که اسپ است خسته تو خسته نهای",
      "m2": "توان شد دگر بار بسته نهای",
      "verse_number": 25
    },
    {
      "id": "f8cbf435-a1df-4565-8415-d8da730b1dc8",
      "m1": "برگیو شد بیژن شیر مرد",
      "m2": "فراوان سخنها بگفت از نبرد",
      "verse_number": 26
    },
    {
      "id": "0422ff52-3fbc-4c72-8d86-3530c285decc",
      "m1": "که ای باب شیراوژن تیزچنگ",
      "m2": "کجا پیل با تو نرفتی بجنگ",
      "verse_number": 27
    },
    {
      "id": "311b6447-eb79-4b7e-b883-da88756fa33f",
      "m1": "چرا دید پشت ترا یک سوار",
      "m2": "که دست تو بودی بهر کارزار",
      "verse_number": 28
    },
    {
      "id": "816dec83-6792-4e9a-a0c6-7f14270be923",
      "m1": "ز ترکی چنین اسپ خسته بدست",
      "m2": "برفتی سراسیمه برسان مست",
      "verse_number": 29
    },
    {
      "id": "01bad307-2727-4941-be45-fe2ac701e819",
      "m1": "بدو گفت چون کشته شد بارگی",
      "m2": "بدو دادمی سر به یکبارگی",
      "verse_number": 30
    },
    {
      "id": "a4a60f51-e741-4bec-b372-126d82767aac",
      "m1": "همی گفت گفتارهای درشت",
      "m2": "چو بیژن چنان دید بنمود پشت",
      "verse_number": 31
    },
    {
      "id": "a3bf325d-2f00-4fa0-9a2d-3b0068afc5fb",
      "m1": "برآشفت گیو از گشاد برش",
      "m2": "یکی تازیانه بزد بر سرش",
      "verse_number": 32
    },
    {
      "id": "be08acb0-0aa6-4b0a-b116-0f7812f2e810",
      "m1": "بدو گفت نشنیدی از رهنمای",
      "m2": "که با رزمت اندیشه باید بجای",
      "verse_number": 33
    },
    {
      "id": "b90f48fd-f6ae-4291-86c8-6809af1c8831",
      "m1": "نه تو مغز داری نه رای و خرد",
      "m2": "چنین گفت را کس بکیفر برد",
      "verse_number": 34
    },
    {
      "id": "c00a0c7f-dc42-45eb-9fa9-b270b44fd7b7",
      "m1": "دل بیژن آمد ز تندی بدرد",
      "m2": "بدادار دارنده سوگند خورد",
      "verse_number": 35
    },
    {
      "id": "7ab3ba80-7bed-415a-b3bb-e7a7e283a197",
      "m1": "که زین را نگردانم از پشت اسپ",
      "m2": "مگر کشته آیم بکین زرسپ",
      "verse_number": 36
    },
    {
      "id": "65f7befb-b500-4fc6-a389-078a7808f0b4",
      "m1": "وزآنجا بیامد دلی پر ز غم",
      "m2": "سری پر ز کینه بر گستهم",
      "verse_number": 37
    },
    {
      "id": "835373d7-3a54-473e-a005-d0f4a16f8958",
      "m1": "کز اسپان تو بارهای دستکش",
      "m2": "کجا بر خرامد بافراز خوش",
      "verse_number": 38
    },
    {
      "id": "0f5c9c98-94df-42c3-bf9a-962ccbb110f5",
      "m1": "بده تا بپوشم سلیح نبرد",
      "m2": "یکی تا پدید آید از مردمرد",
      "verse_number": 39
    },
    {
      "id": "314350a8-e54f-4795-9e3e-346088b6bf7d",
      "m1": "یکی ترک رفتست بر تیغ کوه",
      "m2": "بدین سان نظاره برو بر گروه",
      "verse_number": 40
    },
    {
      "id": "7bd1a1e2-18f1-46e4-ba9f-2d702e5b1472",
      "m1": "چنین داد پاسخ که این نیست روی",
      "m2": "ابر خیره گرد بلاها مپوی",
      "verse_number": 41
    },
    {
      "id": "ae977468-6ea4-4972-bdf9-b7f0bf28d7a5",
      "m1": "زرسپ سپهدار چون ریونیز",
      "m2": "سپهبد که گیتی ندارد بچیز",
      "verse_number": 42
    },
    {
      "id": "bf8af926-6655-4900-9cac-f4cb73ca9ed9",
      "m1": "پدرت آنکه پیل ژیان بشکرد",
      "m2": "بگردنده گردون همی ننگرد",
      "verse_number": 43
    },
    {
      "id": "a88d5d0f-1a56-4c65-ab77-05df01636c57",
      "m1": "ازو بازگشتند دل پر ز درد",
      "m2": "کس آورد با کوه خارا نکرد",
      "verse_number": 44
    },
    {
      "id": "b31160ee-855c-486f-af5d-79f4794f9648",
      "m1": "مگر پر کرگس بود رهنمای",
      "m2": "وگرنه بران دژ که پوید بپای",
      "verse_number": 45
    },
    {
      "id": "88030528-e0e9-49e3-947e-3508080bcbe8",
      "m1": "بدو گفت بیژن که مشکن دلم",
      "m2": "کنون یال و بازو ز هم بگسلم",
      "verse_number": 46
    },
    {
      "id": "7bc2aeb5-4342-4a75-aed8-8e03e0dbc212",
      "m1": "یکی سخت سوگند خوردم بماه",
      "m2": "بدادار گیهان و دیهیم شاه",
      "verse_number": 47
    },
    {
      "id": "bcf2de2d-30a1-4aa1-9c9c-069f8a99cd4f",
      "m1": "کزین ترک من برنگردانم اسپ",
      "m2": "زمانم سراید مگر چون زرسپ",
      "verse_number": 48
    },
    {
      "id": "60582e4a-de48-478e-9f0e-f2c8bc019ffc",
      "m1": "بدو گفت پس گستهم راه نیست",
      "m2": "خرد خود از این تیزی آگاه نیست",
      "verse_number": 49
    },
    {
      "id": "260deef6-08e0-44ba-b170-7005abd27ce9",
      "m1": "جهان پرفراز و نشیبست و دشت",
      "m2": "گر ایدونک زینجا بباید گذشت",
      "verse_number": 50
    },
    {
      "id": "abff0541-bc19-4fda-b71c-64e8e940051b",
      "m1": "مرا بارگیر اینک جوشن کشد",
      "m2": "دو ماندست اگر زین یکی را کشد",
      "verse_number": 51
    },
    {
      "id": "52bb636c-d0df-4ee1-9868-59e98784c143",
      "m1": "نیابم دگر نیز همتای او",
      "m2": "برنگ و تگ و زور و بالای اوی",
      "verse_number": 52
    },
    {
      "id": "b696d138-4143-471b-9424-56d3a42cf3ab",
      "m1": "بدو گفت بیژن بکین زرسپ",
      "m2": "پیاده بپویم نخواهم خود اسپ",
      "verse_number": 53
    },
    {
      "id": "a2036901-98ab-41f8-84d8-c63373f09dd7",
      "m1": "چنین داد پاسخ بدو گستهم",
      "m2": "که مویی نخواهم ز تو بیش و کم",
      "verse_number": 54
    },
    {
      "id": "14127d66-5d88-4768-8033-877c8b609862",
      "m1": "مرا گر بود بارگی ده هزار",
      "m2": "همه دم پر از گوهر شاهوار",
      "verse_number": 55
    },
    {
      "id": "dad5b19e-1f67-4377-9513-5d5873ddb499",
      "m1": "ندارم بدین از تو آن را دریغ",
      "m2": "نه گنج و نه جان و نه اسپ و نه تیغ",
      "verse_number": 56
    },
    {
      "id": "947bb1e7-153e-4af2-aa1f-f2e3e0d53bc6",
      "m1": "برو یک بیک بارگیها ببین",
      "m2": "کدامت به آید یکی برگزین",
      "verse_number": 57
    },
    {
      "id": "229429be-cdc9-4c11-beaa-fa318c76be92",
      "m1": "بفرمای تا زین بر آن کت هواست",
      "m2": "بسازند اگر کشته آید رواست",
      "verse_number": 58
    },
    {
      "id": "9524ca2a-f558-4ea6-a066-84890e0c8f8c",
      "m1": "یکی رخش بودش بکردار گرگ",
      "m2": "کشیده زهار و بلند و سترگ",
      "verse_number": 59
    },
    {
      "id": "24625236-9a7a-46d0-a26c-fc24d931b433",
      "m1": "ز بهر جهانجوی مرد جوان",
      "m2": "برو برفگندند برگستوان",
      "verse_number": 60
    },
    {
      "id": "cc754e42-4be0-48e2-898b-5dca613bad3c",
      "m1": "دل گیو شد زان سخن پر ز دود",
      "m2": "چو اندیشه کرد از گشاد فرود",
      "verse_number": 61
    },
    {
      "id": "8d7521f0-3406-4758-8974-8ac4f3522c02",
      "m1": "فرستاد و مر گستهم را بخواند",
      "m2": "بسی داستانهای نیکو براند",
      "verse_number": 62
    },
    {
      "id": "3a661d32-9e73-40bf-8d68-d1b6f605bb17",
      "m1": "فرستاد درع سیاوش برش",
      "m2": "همان خسروانی یکی مغفرش",
      "verse_number": 63
    },
    {
      "id": "5b4a4583-212c-4513-b93b-32a07a630ddf",
      "m1": "بیاورد گستهم درع نبرد",
      "m2": "بپوشید بیژن بکردار گرد",
      "verse_number": 64
    },
    {
      "id": "7624fbd0-eccd-4a55-b8a9-0e3c40297a39",
      "m1": "بسوی سپد کوه بنهاد روی",
      "m2": "چنانچون بود مردم جنگجوی",
      "verse_number": 65
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 65
  }
}