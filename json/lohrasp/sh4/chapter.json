{
  "id": "1ee5d27f-933f-4306-aa18-f592e47444e5",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "53c63e51-280c-48fb-a592-18ec4107a562",
      "m1": "شب تیره شبدیز لهراسپی",
      "m2": "بیاورد با زین گشتاسپی",
      "verse_number": 1
    },
    {
      "id": "d8462cd4-02a7-4252-8576-f8010d0f1758",
      "m1": "بپوشید زربفت رومی قبای",
      "m2": "ز تاج اندر آویخت پر همای",
      "verse_number": 2
    },
    {
      "id": "99d35e99-f47f-46ae-a515-dc89ddcb8d84",
      "m1": "ز دینار وز گوهر شاهوار",
      "m2": "بیاورد چندان کش آمد به کار",
      "verse_number": 3
    },
    {
      "id": "9a542b00-5518-438e-a0fb-307458f97562",
      "m1": "از ایران سوی روم بنهاد روی",
      "m2": "به دل گاه جوی و روان راه جوی",
      "verse_number": 4
    },
    {
      "id": "16a4954e-02c3-43ca-ba5f-ad96d88a27ef",
      "m1": "پدر چون ز گشتاسپ آگاه شد",
      "m2": "بپیچید و شادیش کوتاه شد",
      "verse_number": 5
    },
    {
      "id": "930bb7ae-7c48-4153-83e8-9cdd1040ffb3",
      "m1": "زریر و همه بخردان را بخواند",
      "m2": "ز گشتاسپ چندی سخنها براند",
      "verse_number": 6
    },
    {
      "id": "d2b3f5d2-fb1e-4be4-ae2d-b9dcadf99d0b",
      "m1": "بدیشان چنین گفت کاین شیر مرد",
      "m2": "سر تاجدار اندر آرد به گرد",
      "verse_number": 7
    },
    {
      "id": "0e74f4d9-a54d-4111-aac9-5ca61277e2b0",
      "m1": "چه بینید و این را چه درمان کنید",
      "m2": "نشاید که این بر دل آسان کنید",
      "verse_number": 8
    },
    {
      "id": "eb573a65-2945-4e20-b313-be8a97350488",
      "m1": "چنین گفت موبد که این نیک بخت",
      "m2": "گرامی به مردان بود تاج و تخت",
      "verse_number": 9
    },
    {
      "id": "eee302fe-4547-4f49-b955-21b38f7bed62",
      "m1": "چو گشتاسپ فرزند کس را نبود",
      "m2": "نه هرگز کس از نامداران شنود",
      "verse_number": 10
    },
    {
      "id": "dd15096d-132b-484e-b4e5-eed5e1921b3a",
      "m1": "ز هر سو بباید فرستاد کس",
      "m2": "دلاور بزرگان فریادرس",
      "verse_number": 11
    },
    {
      "id": "5aee201c-c400-4b0d-ad02-8ae33cdd3b1f",
      "m1": "گر او بازگردد تو زفتی مکن",
      "m2": "هنرجوی و با آز جفتی مکن",
      "verse_number": 12
    },
    {
      "id": "f110fc4f-ab61-4e00-80dc-b23b44a58888",
      "m1": "که تاج کیان چون تو بیند بسی",
      "m2": "نماند همی مهر او بر کسی",
      "verse_number": 13
    },
    {
      "id": "e24df829-cc1f-4a2d-ae8a-4e64a9eb5305",
      "m1": "به گشتاسپ ده زین جهان کشوری",
      "m2": "بنه بر سرش نامدار افسری",
      "verse_number": 14
    },
    {
      "id": "31b87311-9de5-496a-9ba7-35054e86f0f1",
      "m1": "جز از پهلوان رستم نامدار",
      "m2": "به گیتی نبینیم چون او سوار",
      "verse_number": 15
    },
    {
      "id": "70aab1d6-2eef-4c54-9235-583960e1003f",
      "m1": "به بالا و دیدار و فرهنگ و هوش",
      "m2": "چنو نامور نیز نشنید گوش",
      "verse_number": 16
    },
    {
      "id": "1c9bba99-c98b-4a25-b1e5-2aa394d47fd8",
      "m1": "فرستاد لهراسپ چندی مهان",
      "m2": "به جستن گرفتند گرد جهان",
      "verse_number": 17
    },
    {
      "id": "a9b05a92-0b53-4fc8-89bf-b562ee16991b",
      "m1": "برفتند و نومید بازآمدند",
      "m2": "که با اختر دیرساز آمدند",
      "verse_number": 18
    },
    {
      "id": "4da6a83f-1bed-495e-b502-77a5cb4821c7",
      "m1": "نکوهش از آن بهر لهراسپ بود",
      "m2": "غم و رنج تن بهر گشتاسپ بود",
      "verse_number": 19
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 19
  }
}