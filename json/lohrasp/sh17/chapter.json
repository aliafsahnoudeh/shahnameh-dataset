{
  "id": "3ffaabb8-5b02-4a45-b972-0c7fe2ee467f",
  "title": "بخش ۱۷",
  "verses": [
    {
      "id": "6a2ba144-29b3-456d-8c42-d6dadc5b94f0",
      "m1": "چو برخاست قیصر به گشتاسپ گفت",
      "m2": "که پاسخ چرا ماندی در نهفت",
      "verse_number": 1
    },
    {
      "id": "0989f12d-80ec-4433-a40c-2af10cc9a69d",
      "m1": "بدو گفت گشتاسپ من پیش ازین",
      "m2": "ببودم بر شاه ایران زمین",
      "verse_number": 2
    },
    {
      "id": "c5ae8422-d4b1-41b5-9bff-20d5ae322951",
      "m1": "همه لشکر شاه و آن انجمن",
      "m2": "همه آگهند از هنرهای من",
      "verse_number": 3
    },
    {
      "id": "bbd4a15d-35e3-45ac-9711-4901eb81affc",
      "m1": "همان به که من سوی ایشان شوم",
      "m2": "بگویم همه گفتهها بشنوم",
      "verse_number": 4
    },
    {
      "id": "61d05fa6-733e-4428-bf5d-cbd4f89b9679",
      "m1": "برآرم ازیشان همه کام تو",
      "m2": "درفشان کنم در جهان نام تو",
      "verse_number": 5
    },
    {
      "id": "2bb82718-7227-4452-8d2c-3460535fa0a6",
      "m1": "بدو گفت قیصر تو داناتری",
      "m2": "برین آرزو بر تواناتری",
      "verse_number": 6
    },
    {
      "id": "5ab65d97-197f-4d1f-89b0-c173c4c573fc",
      "m1": "چو بشنید گشتاسپ گفتار اوی",
      "m2": "نشست از بر بارهٔ راه جوی",
      "verse_number": 7
    },
    {
      "id": "5690b58f-68b3-4323-b41e-4130f873e233",
      "m1": "بیامد به جای نشست زریر",
      "m2": "به سر افسر و بادپایی به زیر",
      "verse_number": 8
    },
    {
      "id": "459254e8-d34b-471b-acc0-a590f617e4b5",
      "m1": "چو لشکر بدیدند گشتاسپ را",
      "m2": "سرافرازتر پور لهراسپ را",
      "verse_number": 9
    },
    {
      "id": "d23503e5-0104-4f9c-aebe-a70f2cf4985a",
      "m1": "پیاده همه پیش اوی آمدند",
      "m2": "پر از درد و پر آب روی آمدند",
      "verse_number": 10
    },
    {
      "id": "9d8cf3c9-36f8-430d-9254-23129e8bc5c5",
      "m1": "همه پاک بردند پیشش نماز",
      "m2": "که کوتاه شد رنجهای دراز",
      "verse_number": 11
    },
    {
      "id": "02f8c5c3-9761-46e3-9a33-25554f173e14",
      "m1": "همانگه چو آمد به پیشش زریر",
      "m2": "پیاده ببود و شد از رزم سیر",
      "verse_number": 12
    },
    {
      "id": "5b2ff77b-1905-494a-9b70-a572fea2c325",
      "m1": "گرامیش را تنگ در بر گرفت",
      "m2": "چو بگشاد لب پرسش اندر گرفت",
      "verse_number": 13
    },
    {
      "id": "9d9580c0-90c1-4140-bad2-376a9771a962",
      "m1": "نشستند بر تخت با مهتران",
      "m2": "بزرگان ایران و کنداوران",
      "verse_number": 14
    },
    {
      "id": "aa04d1a6-1094-490f-9a0d-6b6b69b660d3",
      "m1": "زریر خجسته به گشتاسپ گفت",
      "m2": "که بادی همه ساله با بخت جفت",
      "verse_number": 15
    },
    {
      "id": "6a3a00e7-78ab-4279-b615-2dd04906bcca",
      "m1": "پدر پیر سر شد تو برنادلی",
      "m2": "ز دیدار پیران چرا بگسلی",
      "verse_number": 16
    },
    {
      "id": "e64f1062-243d-4268-83a2-07b4ec5fe57d",
      "m1": "به پیری ورا بخت خندان شدست",
      "m2": "پرستندهٔ پاک یزدان شدست",
      "verse_number": 17
    },
    {
      "id": "62100e67-8d2e-40fe-af33-57e999201e24",
      "m1": "فرستاد نزدیک تو تاج و گنج",
      "m2": "سزد گر نداری کنون دل به رنج",
      "verse_number": 18
    },
    {
      "id": "7a4b56af-05c5-4c54-a8e8-5aa1c5061bd4",
      "m1": "چنین گفت کایران سراسر تراست",
      "m2": "سر تخت با تاج کشور تراست",
      "verse_number": 19
    },
    {
      "id": "5a0a59b0-79d7-44c1-86a8-6fc998ceb2cf",
      "m1": "ز گیتی یکی کنج ما را بس است",
      "m2": "که تخت مهی را جز از من کس است",
      "verse_number": 20
    },
    {
      "id": "916e1c8e-e719-4151-8f89-582462dfe99e",
      "m1": "برادر بیاورد پرمایه تاج",
      "m2": "همان یاره و طوق و هم تخت عاج",
      "verse_number": 21
    },
    {
      "id": "2e60f0b3-f340-4102-bca0-92525537fb26",
      "m1": "چو گشتاسپ تخت پدر دید شاد",
      "m2": "نشست از برش تاج بر سر نهاد",
      "verse_number": 22
    },
    {
      "id": "567c5bfb-df0d-48ea-ae32-164b868cf153",
      "m1": "نبیرهٔ جهانجوی کاوس کی",
      "m2": "ز گودرزیان هرک بد نیکپی",
      "verse_number": 23
    },
    {
      "id": "66e553ae-6763-495a-b96f-75daf0d9f550",
      "m1": "چو بهرام و چون ساوه و ریونیز",
      "m2": "کسی کو سرافراز بودند نیز",
      "verse_number": 24
    },
    {
      "id": "ea101c6f-5a8a-4ef1-a935-6af25f4f3e46",
      "m1": "به شاهی برو آفرین خواندند",
      "m2": "ورا شهریار زمین خواندند",
      "verse_number": 25
    },
    {
      "id": "c1dc146a-41fc-4d84-b24d-851fb1182c6a",
      "m1": "ببودند بر پای بسته کمر",
      "m2": "هرانکس که بودند پرخاشخر",
      "verse_number": 26
    },
    {
      "id": "42b373dc-a5d2-4a0e-abb7-4d4253c43c89",
      "m1": "چو گشتاسپ دید آن دلارای کام",
      "m2": "فرستاد نزدیک قیصر پیام",
      "verse_number": 27
    },
    {
      "id": "efe73dfc-57d3-40da-9fb1-f58eb0ddf7db",
      "m1": "کز ایران همه کام تو راست گشت",
      "m2": "سخنها ز اندازه اندر گذشت",
      "verse_number": 28
    },
    {
      "id": "c2c2d384-cc31-4d59-9c52-778deafa82e4",
      "m1": "همی چشم دارد زریر و سپاه",
      "m2": "که آیی خرامان بدین رزمگاه",
      "verse_number": 29
    },
    {
      "id": "6ec921fe-abf2-4d50-a177-a206a234297d",
      "m1": "همه سربسر با تو پیمان کنند",
      "m2": "روان را به مهرت گروگان کنند",
      "verse_number": 30
    },
    {
      "id": "8688b868-576e-4826-a123-bc2868008d14",
      "m1": "گرت رنج ناید خرامی به دشت",
      "m2": "که کار زمانه به کام تو گشت",
      "verse_number": 31
    },
    {
      "id": "dc5eb52a-14f9-4e0f-89a3-dc19b8b67eb9",
      "m1": "فرستاده چون نزد قیصر رسید",
      "m2": "به دشت آمد و ساز لشکر بدید",
      "verse_number": 32
    },
    {
      "id": "7b5532a3-6e18-49f9-9f0c-94cbc4968734",
      "m1": "چو گشتاسپ را دید بر تخت عاج",
      "m2": "نهاده به سر بر ز پیروزه تاج",
      "verse_number": 33
    },
    {
      "id": "ddb8b050-7a49-4b97-ba34-bdaabe7db37b",
      "m1": "بیامد ورا تنگ در برگرفت",
      "m2": "سخنهای دیرینه اندر گرفت",
      "verse_number": 34
    },
    {
      "id": "9517d793-c7ee-4832-9196-f80d4d4e8c2b",
      "m1": "بدانست قیصر که گشتاسپ اوست",
      "m2": "فروزندهٔ جان لهراسپ اوست",
      "verse_number": 35
    },
    {
      "id": "f4485244-1e98-4228-8228-c353ae039be0",
      "m1": "فراوانش بستود و بردش نماز",
      "m2": "وزانجا سوی تخت رفتند باز",
      "verse_number": 36
    },
    {
      "id": "180dd8e2-c124-4bf3-b046-d98ed93e04fa",
      "m1": "ازان کردهٔ خویش پوزش گرفت",
      "m2": "بپیچید زان روزگار شگفت",
      "verse_number": 37
    },
    {
      "id": "ee832dc0-b744-46a1-8ce2-f3d9da87a04c",
      "m1": "بپذرفت گفتار او شهریار",
      "m2": "سرش را گرفت آنگهی برکنار",
      "verse_number": 38
    },
    {
      "id": "46a39f78-ea98-49b0-b94d-c7a939dd3cf9",
      "m1": "بدو گفت چون تیره گردد هوا",
      "m2": "فروزیدن شمع باشد روا",
      "verse_number": 39
    },
    {
      "id": "3e29f1e2-651a-4468-9495-8eaf70391d61",
      "m1": "بر ما فرست آنک ما را گزید",
      "m2": "که او درد و رنج فراوان کشید",
      "verse_number": 40
    },
    {
      "id": "9125fdcc-e39d-4727-ac00-ed5a9186e533",
      "m1": "بشد قیصر و رنج و تشویر برد",
      "m2": "بسی نیز بر خوی بد برشمرد",
      "verse_number": 41
    },
    {
      "id": "b8367d64-c59c-4af5-a8af-9a4f018e4c3f",
      "m1": "به سوی کتایون فرستاد گنج",
      "m2": "یکی افسر و سرخ یاقوت پنج",
      "verse_number": 42
    },
    {
      "id": "c0ae520f-9efc-4d88-9e7f-7b20f8d7bb2a",
      "m1": "غلام و پرستار رومی هزار",
      "m2": "یکی طوق پر گوهر شاهوار",
      "verse_number": 43
    },
    {
      "id": "5f2dcdaf-89a4-4525-abef-3383647e94e6",
      "m1": "ز دینار رومی شتروار پنج",
      "m2": "یکی فیلسوفی نگهبان گنج",
      "verse_number": 44
    },
    {
      "id": "4740c2d8-b5d1-47fb-b8be-5fd93eea6c48",
      "m1": "سلیح و درم داد لشکرش را",
      "m2": "همان نامداران کشورش را",
      "verse_number": 45
    },
    {
      "id": "801531a0-c1b6-4f4f-8acc-45c1a3f53654",
      "m1": "هرانکس که بود او ز تخم بزرگ",
      "m2": "وگر تیغ زن نامداری سترگ",
      "verse_number": 46
    },
    {
      "id": "70aff5a8-cd34-48fc-bb52-ecde661e9a46",
      "m1": "بیاراست خلعت سزاوارشان",
      "m2": "برافرخت پژمرده بازارشان",
      "verse_number": 47
    },
    {
      "id": "1854ff4b-386d-4f67-be04-39c4d016c254",
      "m1": "از اسپان تازی و برگستوان",
      "m2": "ز خفتان وز جامهٔ هندوان",
      "verse_number": 48
    },
    {
      "id": "9e5ae8c9-1d31-4074-9389-b6ccc3e0ae26",
      "m1": "ز دیبا و دینار و تاج و نگین",
      "m2": "ز تخت و ز هرگونه دیبای چین",
      "verse_number": 49
    },
    {
      "id": "ff6bf334-4189-4d87-8661-0a0a2a3b8da6",
      "m1": "فرستاده نزدیک گشتاسپ برد",
      "m2": "یکایک به گنجور او برشمرد",
      "verse_number": 50
    },
    {
      "id": "56bf2f1a-cded-4479-9e86-60be50e1c98b",
      "m1": "ابا این بسی آفرین گسترید",
      "m2": "بران کو زمان و زمین آفرید",
      "verse_number": 51
    },
    {
      "id": "85f7c5a8-f2a2-4e91-8688-723e2f74b1c4",
      "m1": "کتایون چو آمد به نزدیک شاه",
      "m2": "غو کوس برخاست از بارگاه",
      "verse_number": 52
    },
    {
      "id": "6997b362-1780-4b36-809c-28c1fec34405",
      "m1": "سپه سوی ایران برفتن گرفت",
      "m2": "هوا گرد اسپان نهفتن گرفت",
      "verse_number": 53
    },
    {
      "id": "29c67c9f-8bb9-4516-a66b-c9021d322817",
      "m1": "چو قیصر دو منزل بیامد به راه",
      "m2": "عنان تگاور بپیچید شاه",
      "verse_number": 54
    },
    {
      "id": "98e9a8bc-e316-472f-866a-bbd708423d0e",
      "m1": "به سوگند ازان مرز برگاشتش",
      "m2": "به خواهش سوی روم بگذاشتش",
      "verse_number": 55
    },
    {
      "id": "5e432399-4935-4b7f-8360-d75231ff023e",
      "m1": "وزان جایگه شد سوی روم باز",
      "m2": "چو گشتاسپ شد سوی راه دراز",
      "verse_number": 56
    },
    {
      "id": "66577617-d58a-44a1-ae69-bea907aaf89c",
      "m1": "همی راند تا سوی ایران رسید",
      "m2": "به نزد دلیران و شیران رسید",
      "verse_number": 57
    },
    {
      "id": "99aeaea6-9898-462d-beba-f1cfeb0f3363",
      "m1": "چو بشنید لهراسپ کامد زریر",
      "m2": "برادرش گشتاسپ آن نره شیر",
      "verse_number": 58
    },
    {
      "id": "f5cfe4df-a69d-4291-94f2-ff1320c5e62a",
      "m1": "پذیره شدش با همه مهتران",
      "m2": "بزرگان ایران و نامآوران",
      "verse_number": 59
    },
    {
      "id": "8dc67a08-fe97-4d6a-833a-77a2f546a21b",
      "m1": "چو دید او پسر را به بر درگرفت",
      "m2": "ز جور فلک دست بر سر گرفت",
      "verse_number": 60
    },
    {
      "id": "4dd912cb-9f9a-4904-a554-916ad879d251",
      "m1": "فرود آمد از باره گشتاسپ زود",
      "m2": "بدو آفرین کرد و زاری نمود",
      "verse_number": 61
    },
    {
      "id": "02e258f5-f6c3-443a-aba1-d9ac68daccde",
      "m1": "ز ره چو به ایوان شاهی شدند",
      "m2": "چو خورشید در برج ماهی شدند",
      "verse_number": 62
    },
    {
      "id": "2f4b6d6e-8f61-4f89-9e3b-84bf068d63f1",
      "m1": "بدو گفت لهراسپ کز من مبین",
      "m2": "چنین بود رای جهان آفرین",
      "verse_number": 63
    },
    {
      "id": "b03fc024-16b3-42d8-b0ca-3c18fe2c8c08",
      "m1": "نوشته چنین بد مگر بر سرت",
      "m2": "که پردخت ماند ز تو کشورت",
      "verse_number": 64
    },
    {
      "id": "e8369b5b-6d4c-4c41-9fe6-75eb879b5b54",
      "m1": "بدو شادمان گشت لهراسپ شاه",
      "m2": "مر او را نشاند از بر تخت و گاه",
      "verse_number": 65
    },
    {
      "id": "4635fb89-c57a-4d8e-9c7d-b94963f0e4b4",
      "m1": "ببوسید و تاجش به سر بر نهاد",
      "m2": "همی آفرین کرد با تاج یاد",
      "verse_number": 66
    },
    {
      "id": "9c815e5d-e41f-45a5-964e-f34c9e06bbbd",
      "m1": "بدو گفت گشتاسپ کای شهریار",
      "m2": "ابی تو مبیناد کس روزگار",
      "verse_number": 67
    },
    {
      "id": "e1f3318e-4ff6-4a7e-bcb8-0e84f7182274",
      "m1": "چو مهتر کنی من ترا کهترم",
      "m2": "بکوشم که گرد ترا نسپرم",
      "verse_number": 68
    },
    {
      "id": "37779efa-e7ae-408d-b2bb-0ad453dccc5c",
      "m1": "همه نیک بادا سرانجام تو",
      "m2": "مبادا که باشیم بینام تو",
      "verse_number": 69
    },
    {
      "id": "e454a203-ee30-4a1c-8ccd-319cc1819e1c",
      "m1": "که گیتی نماند همی بر کسی",
      "m2": "چو ماند به تن رنج ماند بسی",
      "verse_number": 70
    },
    {
      "id": "e0e85f36-8bbd-41f8-bb65-e4ca4db36c81",
      "m1": "چنین است گیهان ناپایدار",
      "m2": "برو تخم بد تا توانی مکار",
      "verse_number": 71
    },
    {
      "id": "7151348e-4a7d-436f-bfb2-f6ba69694a07",
      "m1": "همی خواهم از دادگر یک خدای",
      "m2": "که چندان بمانم به گیتی به جای",
      "verse_number": 72
    },
    {
      "id": "afe01c8e-8102-457b-a72d-8259df2e0aa0",
      "m1": "که این نامهٔ شهریاران پیش",
      "m2": "بپیوندم از خوب گفتار خویش",
      "verse_number": 73
    },
    {
      "id": "89083a3d-cf3f-4fff-a351-f6e3029130f5",
      "m1": "ازان پس تن جانور خاک راست",
      "m2": "سخن گوی جان معدن پاک راست",
      "verse_number": 74
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 74
  },
  "order_in_parent": 17
}