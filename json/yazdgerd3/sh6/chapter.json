{
  "id": "3658614e-8d5e-4c17-8b89-2e1c5049e739",
  "title": "بخش ۶",
  "verses": [
    {
      "id": "adffd527-fdee-477e-8398-4f05e5ff74b0",
      "m1": "فرخزاد هرمزد با آب چشم",
      "m2": "به اروندرود اندر آمد بخشم",
      "verse_number": 1
    },
    {
      "id": "464539c7-06c4-4e9b-b43d-c5ecd617605f",
      "m1": "به کرخ اندر آمد یکی حمله برد",
      "m2": "که از نیزهداران نماند ایچ گُرد",
      "verse_number": 2
    },
    {
      "id": "5d65b4aa-f87e-4687-94fb-6dfb2eaaa1cf",
      "m1": "هم آنگه ز بغداد بیرون شدند",
      "m2": "سوی رزم جستن به هامون شدند",
      "verse_number": 3
    },
    {
      "id": "817715f3-7033-4e0f-a0e3-610f033f6c1e",
      "m1": "چو برخاست گرد نبرد از میان",
      "m2": "شکست اندر آمد به ایرانیان",
      "verse_number": 4
    },
    {
      "id": "067b56f0-391c-4e96-90c8-d24ad7ce84b0",
      "m1": "فرخزاد برگشت و شد نزد شاه",
      "m2": "پر از گرد با آلت رزمگاه",
      "verse_number": 5
    },
    {
      "id": "98a22ba3-b87c-43ae-bbc7-2b3ee9b618a5",
      "m1": "فرود آمد از باره بردش نماز",
      "m2": "دو دیده پر از خون و دل پرگداز",
      "verse_number": 6
    },
    {
      "id": "6e99b497-145b-46b5-bd89-1606f9f80023",
      "m1": "بدو گفت چندین چه مولی همی",
      "m2": "که گاه کیی را بشولی همی",
      "verse_number": 7
    },
    {
      "id": "849f03a8-5e21-446f-9d8d-f61b10d56041",
      "m1": "ز تخم کیان کس جز از تو نماند",
      "m2": "که با تاج بر تخت شاید نشاند",
      "verse_number": 8
    },
    {
      "id": "a6f44597-feb9-40bb-ad05-de2700b5aa21",
      "m1": "توی یک تن و دشمنان صد هزار",
      "m2": "میان جهان چون کنی کارزار",
      "verse_number": 9
    },
    {
      "id": "d15601ca-aaea-41c0-a105-9a59da936d87",
      "m1": "برو تا سوی بیشهٔ ناروَن",
      "m2": "جهانی شود بر تو بر انجمن",
      "verse_number": 10
    },
    {
      "id": "511d07fa-1c96-40b5-9a2a-bf18a372c246",
      "m1": "وزان جایگاه چون فریدون برو",
      "m2": "جوانی یکی کار برساز نو",
      "verse_number": 11
    },
    {
      "id": "57a0f611-28d7-456c-a1b4-92ce69595203",
      "m1": "فرخزاد گفت و جهانبان شنید",
      "m2": "یکی دیگر اندیشه آمد پدید",
      "verse_number": 12
    },
    {
      "id": "7140cc81-a51f-4fe9-97be-d3f17bf8bba3",
      "m1": "دگر روز برگاه بنشست شاه",
      "m2": "به سر برنهاد آن کیانی کلاه",
      "verse_number": 13
    },
    {
      "id": "1c3f4458-c431-46d1-9fa3-2e9d5909491e",
      "m1": "یکی انجمن کرد با بخردان",
      "m2": "بزرگان و بیداردل موبدان",
      "verse_number": 14
    },
    {
      "id": "11bc5a54-53e9-4045-871c-0fcc072235f4",
      "m1": "چه بینید گفت اندرین داستان",
      "m2": "چه دارید یاد از گه باستان",
      "verse_number": 15
    },
    {
      "id": "25bc5c03-c4d8-452d-afaf-5b7256befcc7",
      "m1": "فرخزاد گوید که با انجمن",
      "m2": "گذر کن سوی بیشهٔ ناروَن",
      "verse_number": 16
    },
    {
      "id": "adb8acd4-b195-41f1-9238-cefd43146a13",
      "m1": "به آمل پرستندگان تواَند",
      "m2": "به ساری همه بندگان تواَند",
      "verse_number": 17
    },
    {
      "id": "fc94f332-e416-4df3-a7df-148ea2dbcf24",
      "m1": "چو لشکر فراوان شود بازگرد",
      "m2": "به مردم توان ساخت ننگ و نبرد",
      "verse_number": 18
    },
    {
      "id": "8f0b843b-1a9c-4d28-a162-d4a6f594888b",
      "m1": "شما را پسند آید این گفتوگوی",
      "m2": "به آواز گفتند کاین نیست روی",
      "verse_number": 19
    },
    {
      "id": "fe5ec605-c560-470d-9ec5-4c753142d8af",
      "m1": "شهنشاه گفت این سخن درخورَست",
      "m2": "مرا در دل اندیشهٔ دیگرَست",
      "verse_number": 20
    },
    {
      "id": "0380860e-b1b1-4477-a5e1-7938048c0325",
      "m1": "بزرگان ایران و چندین سپاه",
      "m2": "بر و بوم آباد و تخت و کلاه",
      "verse_number": 21
    },
    {
      "id": "e81d01d6-894e-4407-bca1-3056db2f00fb",
      "m1": "سرِ خویش گیرم بمانم بجای",
      "m2": "بزرگی نباشد نه مردی و رای",
      "verse_number": 22
    },
    {
      "id": "8a45bf5c-c862-4f0a-ae56-dc1087867653",
      "m1": "مرا جنگ دشمن به آید ز ننگ",
      "m2": "یکی داستان زد برین بر پلنگ",
      "verse_number": 23
    },
    {
      "id": "3c846deb-837f-44a9-8485-8ccbc00c73ec",
      "m1": "که خیره به بدخواه منمای پشت",
      "m2": "چو پیش آیدت روزگاری درشت",
      "verse_number": 24
    },
    {
      "id": "92db0310-ffcb-4424-af5e-1faede0f4548",
      "m1": "چنان هم که کهتر به فرمان شاه",
      "m2": "بد و نیک باید که دارد نگاه",
      "verse_number": 25
    },
    {
      "id": "a74e1d0d-4adf-4c3f-9763-dc65a243131a",
      "m1": "جهاندار باید که او را به رنج",
      "m2": "نماند بجای و شود سوی گنج",
      "verse_number": 26
    },
    {
      "id": "205bd49c-9754-4999-8603-cb05f9e01a5e",
      "m1": "بزرگان برو خواندند آفرین",
      "m2": "که اینست آیین شاهان دین",
      "verse_number": 27
    },
    {
      "id": "a0481fdb-d4d5-4d6b-a048-286748d942f5",
      "m1": "نگه کن کنون تا چه فرمان دهی",
      "m2": "چه خواهی و با ما چه پیمان نهی",
      "verse_number": 28
    },
    {
      "id": "c7393067-5f37-45cc-9bb5-1173d95018b8",
      "m1": "مهان را چنین پاسخ آورد شاه",
      "m2": "کز اندیشه گردد دل من تباه",
      "verse_number": 29
    },
    {
      "id": "952d202a-5430-48b8-af04-0b8158ea79c8",
      "m1": "همانا که سوی خراسان شویم",
      "m2": "ز پیکار دشمن تنآسان شویم",
      "verse_number": 30
    },
    {
      "id": "fd8fb663-62f1-4674-95f3-da0cc0bd672e",
      "m1": "کزان سو فراوان مرا لشکرست",
      "m2": "همه پهلوانان کنداورست",
      "verse_number": 31
    },
    {
      "id": "20829273-d04e-4c4d-8c11-b69943c88aa5",
      "m1": "بزرگان و ترکان خاقان چین",
      "m2": "بیایند و بر ما کنند آفرین",
      "verse_number": 32
    },
    {
      "id": "3e332831-0fb4-4ebf-8c62-aea0ec801177",
      "m1": "بران دوستی نیز بیشی کنیم",
      "m2": "که با دختِ فغفور خویشی کنیم",
      "verse_number": 33
    },
    {
      "id": "a413b368-ea26-4db4-b0a7-27596f4b08ec",
      "m1": "بِیاری بیاید سپاهی گران",
      "m2": "بزرگان و ترکان جنگاوران",
      "verse_number": 34
    },
    {
      "id": "77d75574-b54d-4bdb-9c7a-96c941557d70",
      "m1": "کنارنگِ مروست ماهوی نیز",
      "m2": "ابا لشکر و پیل و هر گونه چیز",
      "verse_number": 35
    },
    {
      "id": "4b7758d8-4e8d-4d09-b0b5-5beb3c9999bf",
      "m1": "کجا پیشکار شبانان ماست",
      "m2": "برآوردهٔ دشتبانان ماست",
      "verse_number": 36
    },
    {
      "id": "2106865d-2c15-4830-bca4-743338d656b6",
      "m1": "ورا برکشیدم که گوینده بود",
      "m2": "همان رزم را نیز جوینده بود",
      "verse_number": 37
    },
    {
      "id": "5049fc68-8d08-4533-ad62-1950fe565483",
      "m1": "چو بیارز را نام دادیم و ارز",
      "m2": "کنارنگی و پیل و مردان و مرز",
      "verse_number": 38
    },
    {
      "id": "5ac8d0a3-6ce9-4995-af20-281198be8b1b",
      "m1": "اگر چند بیمایه و بیتنست",
      "m2": "برآوردهٔ بارگاه منست",
      "verse_number": 39
    },
    {
      "id": "3e1a433b-4069-4a07-91d2-4505fd628a8c",
      "m1": "ز موبد شنیدستم این داستان",
      "m2": "که برخواند از گفتهٔ باستان",
      "verse_number": 40
    },
    {
      "id": "32ea7b67-d476-4002-8d0d-ea3712c4c8ed",
      "m1": "که پرهیز از آن کن که بد کردهای",
      "m2": "که او را به بیهوده آزردهای",
      "verse_number": 41
    },
    {
      "id": "1e699bde-f7d5-4266-bbd8-4899abbffee1",
      "m1": "بدان دار اومید کو را به مهر",
      "m2": "سر از نیستی بردی اندر سپهر",
      "verse_number": 42
    },
    {
      "id": "a0ac0fc6-bf52-41cb-b206-8ed30cca261e",
      "m1": "فرخزاد برهم بزد هر دودست",
      "m2": "بدو گفت کای شاه یزدانپرست",
      "verse_number": 43
    },
    {
      "id": "be85fe59-3550-4785-be78-32d8bb39e446",
      "m1": "به بدگوهران بر بس ایمن مشو",
      "m2": "که این را یکی داستانست نو",
      "verse_number": 44
    },
    {
      "id": "9ae435e5-d41b-4b13-857c-e31933a45333",
      "m1": "که هر چند بر گوهر افسون کنی",
      "m2": "بکوشی کزو رنگ بیرون کنی",
      "verse_number": 45
    },
    {
      "id": "a16bb94a-fe68-4d30-9c7b-cdaf1622664c",
      "m1": "چو پروردگارش چنان آفرید",
      "m2": "تو بر بند یزدان نیابی کلید",
      "verse_number": 46
    },
    {
      "id": "fa53bc53-cf7e-433a-8c7d-23aa15ea2fc1",
      "m1": "ازیشان نبرّند رنگ و نژاد",
      "m2": "تو را جز بزرگی و شاهی مباد",
      "verse_number": 47
    },
    {
      "id": "b2580e10-b497-4d84-ab33-0ce35f3ce618",
      "m1": "بدو گفت شاه ای هژبر ژیان",
      "m2": "ازین آزمایش ندارد زیان",
      "verse_number": 48
    },
    {
      "id": "2619973e-047f-4de1-819b-b4a67dc1aaf5",
      "m1": "ببود آن شب و بامداد پگاه",
      "m2": "گرانمایگان برگرفتند راه",
      "verse_number": 49
    },
    {
      "id": "a90f6b8f-9700-4ec8-be81-5d55756c9233",
      "m1": "ز بغداد راه خراسان گرفت",
      "m2": "همه رنجها بر دل آسان گرفت",
      "verse_number": 50
    },
    {
      "id": "d38257b7-a273-4872-a436-e2e214cadc64",
      "m1": "بزرگان ایران همه پر ز درد",
      "m2": "برفتند با شاه آزادمرد",
      "verse_number": 51
    },
    {
      "id": "ca181b28-7695-47c0-8a2e-2763e63dc386",
      "m1": "برو بر همیخواندند آفرین",
      "m2": "که بی تو مبادا زمان و زمین",
      "verse_number": 52
    },
    {
      "id": "927dd18b-a213-4c1c-9d39-d21f48158682",
      "m1": "خروشی برآمد ز لشکر به زار",
      "m2": "ز تیمار وز رفتن شهریار",
      "verse_number": 53
    },
    {
      "id": "be2069a4-83d0-4639-bebd-dfdc0f53d1c8",
      "m1": "ازیشان هر آنکس که دهقان بدند",
      "m2": "وگر خویش و پیوند خاقان بدند",
      "verse_number": 54
    },
    {
      "id": "d480e742-df49-48e7-89f9-eeedcc57fa1d",
      "m1": "خروشان برِ شهریار آمدند",
      "m2": "همه دیده چون جویبار آمدند",
      "verse_number": 55
    },
    {
      "id": "3fdc9dbe-c9fa-4672-9b65-a2c56b95e788",
      "m1": "که ما را دل از بوم و آرامگاه",
      "m2": "چگونه بوَد شاد بی روی شاه",
      "verse_number": 56
    },
    {
      "id": "ec762822-0980-469e-bbc6-3ed23aee83d6",
      "m1": "همه بوم آباد و فرزند و گنج",
      "m2": "بمانیم و با تو گزینیم رنج",
      "verse_number": 57
    },
    {
      "id": "5bf66f1c-74a9-4d1d-bfea-5a8f1276662e",
      "m1": "زمانه نخواهیم بی تخت تو",
      "m2": "مبادا که پیچان شود بخت تو",
      "verse_number": 58
    },
    {
      "id": "3d64d104-363d-4d6f-a9af-c6af58cb71c9",
      "m1": "همه با تو آییم تا روزگار",
      "m2": "چه بازی کند در دم کارزار",
      "verse_number": 59
    },
    {
      "id": "f720942a-3fa8-4f4f-9833-d8694e1d77d5",
      "m1": "ز خاقانیان آنک بُد چربگوی",
      "m2": "به خاک سیه برنهادند روی",
      "verse_number": 60
    },
    {
      "id": "47cbdff9-779f-4975-9a95-41c6834f614b",
      "m1": "که ما بوم آباد بگذاشتیم",
      "m2": "جهان در پناه تو پنداشتیم",
      "verse_number": 61
    },
    {
      "id": "eef79bd0-88e0-4e19-8786-7809f1c5a50b",
      "m1": "کنون داغدل نزد خاقان شویم",
      "m2": "ز تازی سوی مرز دهقان شویم",
      "verse_number": 62
    },
    {
      "id": "b08c6523-d2dc-42be-b5bd-0f19b10113dd",
      "m1": "شهنشاه مژگان پر از آب کرد",
      "m2": "چنین گفت با نامداران بدرد",
      "verse_number": 63
    },
    {
      "id": "356e73fa-eb9c-474b-8b05-fba4f6611faa",
      "m1": "که یکسر به یزدان نیایش کنید",
      "m2": "ستایش ورا در فزایش کنید",
      "verse_number": 64
    },
    {
      "id": "a247540b-8930-49f8-af75-cd9b61213fa9",
      "m1": "مگر باز بینم شما را یکی",
      "m2": "شود تیزی تازیان اندکی",
      "verse_number": 65
    },
    {
      "id": "6271dda0-900e-4e0c-89e8-e281c06bd75c",
      "m1": "همه پاک پروردگار منید",
      "m2": "همان از پدر یادگار منید",
      "verse_number": 66
    },
    {
      "id": "b0fc079b-e8ac-4bc7-8a57-816c89c5455f",
      "m1": "نخواهم که آید شما را گزند",
      "m2": "مباشید با من ببد یارمند",
      "verse_number": 67
    },
    {
      "id": "4261bbad-bbce-438d-bb91-70ffe3574f7d",
      "m1": "ببینیم تا گرد گردان سپهر",
      "m2": "ازین سو کنون بر که گردد به مهر",
      "verse_number": 68
    },
    {
      "id": "c4b38792-5d38-4abb-b789-8ec4fee46626",
      "m1": "شما ساز گیرید با پای او",
      "m2": "گذر نیست با گردش و رای او",
      "verse_number": 69
    },
    {
      "id": "dc7e64df-7cf1-4d72-ad1e-ccf9e692260a",
      "m1": "وزان پس به بازارگانان چین",
      "m2": "چنین گفت کاکنون به ایرانزمین",
      "verse_number": 70
    },
    {
      "id": "6c7d2487-627a-4dba-bcaa-f3cfaf4ddd81",
      "m1": "مباشید یک چند کز تازیان",
      "m2": "بدین سود جستن سرآید زیان",
      "verse_number": 71
    },
    {
      "id": "50496465-fe66-4786-add1-de1e332c2d61",
      "m1": "ازو بازگشتند با درد و جوش",
      "m2": "ز تیمار با ناله و با خروش",
      "verse_number": 72
    },
    {
      "id": "cceed6c5-116f-44ae-94ca-01de92f18d03",
      "m1": "فرخزاد هرمزد لشکر براند",
      "m2": "ز ایران جهاندیدگان را بخواند",
      "verse_number": 73
    },
    {
      "id": "949c81f0-ace6-4dd0-8933-81003dbe4a8d",
      "m1": "همیرفت با ناله و درد شاه",
      "m2": "سپهبد به پیش اندرون با سپاه",
      "verse_number": 74
    },
    {
      "id": "39303243-fa7e-478a-b720-11d2ffd387fc",
      "m1": "چو منزل به منزل بیامد برِی",
      "m2": "برآسود یک چند با رود و می",
      "verse_number": 75
    },
    {
      "id": "041be3fb-1266-45a4-997c-007cf96cd786",
      "m1": "ز ری سوی گرگان بیامد چو باد",
      "m2": "همیبود یک چند ناشاد و شاد",
      "verse_number": 76
    },
