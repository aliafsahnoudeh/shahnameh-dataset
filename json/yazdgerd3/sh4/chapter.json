{
  "id": "5a1a3daf-6cdb-4c4e-80af-6657aa1e30dd",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "49bbacb3-d13c-49b1-acdd-11f03ee98115",
      "m1": "چو بشنید سعد آن گرانمایه مرد",
      "m2": "پذیره شدش با سپاهی چو گرد",
      "verse_number": 1
    },
    {
      "id": "98f53c46-a33a-4c35-b6b3-7f328420f8a2",
      "m1": "فرود آوریدندش اندر زمان",
      "m2": "بپرسید سعد از تن پهلوان",
      "verse_number": 2
    },
    {
      "id": "f0c63036-a960-48aa-803a-15b929ed90cb",
      "m1": "هم از شاه و دستور و ز لشکرش",
      "m2": "ز سالار بیدار و ز کشورش",
      "verse_number": 3
    },
    {
      "id": "2662009a-ab65-484c-b923-4f2bcc7409c2",
      "m1": "ردا زیر پیروز بفگند و گفت",
      "m2": "که ما نیزه و تیغ داریم جفت",
      "verse_number": 4
    },
    {
      "id": "ecca58e7-7b58-47fc-b867-fd4760f504c9",
      "m1": "ز دیبا نگویند مردان مرد",
      "m2": "ز رز و ز سیم و ز خواب و ز خورد",
      "verse_number": 5
    },
    {
      "id": "2ccdad1f-95a1-492b-882c-c029e1610e89",
      "m1": "گرانمایه پیروز نامه بداد",
      "m2": "سخنهای رستم همیکرد یاد",
      "verse_number": 6
    },
    {
      "id": "f7a75c42-ed89-4012-85fd-f1b685ae68b0",
      "m1": "سخنهاش بشنید و نامه بخواند",
      "m2": "دران گفتن نامه خیره بماند",
      "verse_number": 7
    },
    {
      "id": "d51ecc92-1632-4c7b-9809-d4dd17a060f7",
      "m1": "بتازی یکی نامه پاسخ نوشت",
      "m2": "پدیدار کرد اندرو خوب و زشت",
      "verse_number": 8
    },
    {
      "id": "8f869060-d5ef-4e9e-a3e0-1b8bec852824",
      "m1": "ز جنی سخن گفت وز آدمی",
      "m2": "ز گفتار پیغمبر هاشمی",
      "verse_number": 9
    },
    {
      "id": "ed359e01-a223-435c-83df-23b1f8337596",
      "m1": "ز توحید و قرآن و وعد و وعید",
      "m2": "ز تأیید و ز رسمهای جدید",
      "verse_number": 10
    },
    {
      "id": "c89db5f2-f98f-4bc4-90b8-db2b0688254f",
      "m1": "ز قطران و ز آتش و زمهریر",
      "m2": "ز فردوس وز حور وز جوی شیر",
      "verse_number": 11
    },
    {
      "id": "9c722e10-50c0-4b29-9d95-00a31709f48d",
      "m1": "ز کافور منشور و ما معین",
      "m2": "درخت بهشت و می و انگبین",
      "verse_number": 12
    },
    {
      "id": "978ae01e-a838-41a3-adcc-df4e897f7477",
      "m1": "اگر شاه بپذیرد این دین راست",
      "m2": "دو عالم به شاهی و شادی وراست",
      "verse_number": 13
    },
    {
      "id": "7bb01c3a-81da-4d9f-a5f8-5f976baeb010",
      "m1": "همان تاج دارد همان گوشوار",
      "m2": "همه ساله با بوی و رنگ و نگار",
      "verse_number": 14
    },
    {
      "id": "06fe8479-59e9-4cb4-a700-bba3d8510516",
      "m1": "شفیع از گناهش محمد بود",
      "m2": "تنش چون گلاب مصعد بود",
      "verse_number": 15
    },
    {
      "id": "04ae8d71-a9d8-48ab-981a-215e7d1f9043",
      "m1": "بکاری که پاداش یابی بهشت",
      "m2": "نباید به باغ بلا کینه کشت",
      "verse_number": 16
    },
    {
      "id": "47f96802-ceb7-458f-8025-abdeab520057",
      "m1": "تن یزدگرد و جهان فراخ",
      "m2": "چنین باغ و میدان و ایوان وکاخ",
      "verse_number": 17
    },
    {
      "id": "d59ad725-4b42-4cba-98d3-e1f0a54e2cf8",
      "m1": "همه تخت گاه و همه جشن و سور",
      "m2": "نخَرَّم به دیدار یک موی حور",
      "verse_number": 18
    },
    {
      "id": "e1b92024-acad-488e-805f-e58a152291e5",
      "m1": "دو چشم تو اندر سرای سپنج",
      "m2": "چنین خیره شد از پی تاج و گنج",
      "verse_number": 19
    },
    {
      "id": "5154dd8b-09a1-4eee-9aa2-eda4ceedd815",
      "m1": "بس ایمن شدستی برین تخت عاج",
      "m2": "بدین یوز و باز و بدین مهر و تاج",
      "verse_number": 20
    },
    {
      "id": "2a40f2df-d3cc-4775-96bd-4e43590de9ad",
      "m1": "جهانی کجا شربتی آب سرد",
      "m2": "نیرزد دلت را چه داری به درد",
      "verse_number": 21
    },
    {
      "id": "56acf8c0-08cc-4b73-a5d8-e9a13423f484",
      "m1": "هرآنکس که پیش من آید به جنگ",
      "m2": "نبیند به جز دوزخ و گور تنگ",
      "verse_number": 22
    },
    {
      "id": "8b4e7beb-b256-4627-92c4-c64724b5b497",
      "m1": "بهشتست اگر بگروی جای تو",
      "m2": "نگر تا چه باشد کنون رای تو",
      "verse_number": 23
    },
    {
      "id": "d28eb209-f5bd-486b-9758-06c9cf8c56a1",
      "m1": "به قرطاس مهر عرب برنهاد",
      "m2": "درود محمد همیکرد یاد",
      "verse_number": 24
    },
    {
      "id": "2e564957-165e-4c8f-9a9d-ad7b976c81de",
      "m1": "چو شعبه مغیره بگفت آن زمان",
      "m2": "که آید بر رستم پهلوان",
      "verse_number": 25
    },
    {
      "id": "32abdc54-ee1e-4fb6-8fd7-734ae0929233",
      "m1": "ز ایران یکی نامداری ز راه",
      "m2": "بیامد بر پهلوان سپاه",
      "verse_number": 26
    },
    {
      "id": "cf5d14f3-feb2-4783-8e3d-86c22992b374",
      "m1": "که آمد فرستادهای پیر و سست",
      "m2": "نه اسپ و سلیح و نه چشمی درست",
      "verse_number": 27
    },
    {
      "id": "94266c23-3315-4d51-87e2-aa04e6eddc12",
      "m1": "یکی تیغ باریک بر گردنش",
      "m2": "پدید آمده چاک پیراهنش",
      "verse_number": 28
    },
    {
      "id": "23d87f1d-eb8e-446e-806f-64c080352bcb",
      "m1": "چورستم به گفتار او بنگرید",
      "m2": "ز دیبا سراپردهٔ برکشید",
      "verse_number": 29
    },
    {
      "id": "0f33560c-15ac-440e-9094-aad5374427e6",
      "m1": "ز زربفت چینی کشیدند نخ",
      "m2": "سپاه اندر آمد چو مور و ملخ",
      "verse_number": 30
    },
    {
      "id": "2e1be3f9-231d-49ba-8d38-d67a7e1adab4",
      "m1": "نهادند زرین یکی زیرگاه",
      "m2": "نشست از برش پهلوان سپاه",
      "verse_number": 31
    },
    {
      "id": "842c5f75-b3c7-4365-b462-a778894b12db",
      "m1": "بر او از ایرانیان شست مرد",
      "m2": "سواران و مردان روز نبرد",
      "verse_number": 32
    },
    {
      "id": "5e8f2643-5118-4095-bb6d-9ba2f6efc6d3",
      "m1": "به زر بافته جامههای بنفش",
      "m2": "بپا اندرون کرده زرینه کفش",
      "verse_number": 33
    },
    {
      "id": "c7da959a-8fc7-4761-ba90-40079a440797",
      "m1": "همه طوق داران با گوشوار",
      "m2": "سرا پرده آراسته شاهوار",
      "verse_number": 34
    },
    {
      "id": "264f963b-b3a8-4adb-bbea-7d0865a41116",
      "m1": "چو شعبه به بالای پرده سرای",
      "m2": "بیامد بران جامه ننهاد پای",
      "verse_number": 35
    },
    {
      "id": "1abaea22-7ab4-4671-b07c-443ae881d554",
      "m1": "همیرفت برخاک برخوار خوار",
      "m2": "ز شمشیر کرده یکی دستوار",
      "verse_number": 36
    },
    {
      "id": "6b51e3ee-54ac-476a-bb47-c5be2fcce31f",
      "m1": "نشست از بر خاک و کس را ندید",
      "m2": "سوی پهلوان سپه ننگرید",
      "verse_number": 37
    },
    {
      "id": "e654b20c-c606-4f62-9499-65ea16b1c99e",
      "m1": "بدو گفت رستم که جان شاددار",
      "m2": "بدانش روان و تن آباد دار",
      "verse_number": 38
    },
    {
      "id": "7c6fba01-d6c7-475b-b241-0fa376a61812",
      "m1": "بدو گفت شعبه که ای نیک نام",
      "m2": "اگر دین پذیری شوم شادکام",
      "verse_number": 39
    },
    {
      "id": "9abeb7f7-861f-4776-be3a-e0e453e95c31",
      "m1": "بپیچید رستم ز گفتار اوی",
      "m2": "بروهاش پرچین شد و زرد روی",
      "verse_number": 40
    },
    {
      "id": "748a3a1b-ef46-4a53-8de0-8aef8f265f84",
      "m1": "ازو نامه بستد بخواننده داد",
      "m2": "سخنها برو کرد خواننده یاد",
      "verse_number": 41
    },
    {
      "id": "372d2491-60ad-463c-8abc-87167accdbaa",
      "m1": "چنین داد پاسخ که او رابگوی",
      "m2": "که نه شهریاری نه دیهیم جوی",
      "verse_number": 42
    },
    {
      "id": "ba2f4585-1166-4557-a6b2-5e1e7ae85bbd",
      "m1": "ندیده سرنیزهات بخت را",
      "m2": "دلت آرزو کرد مر تخت را",
      "verse_number": 43
    },
    {
      "id": "2193e4b1-5ee6-441a-bfb1-e0f8291d3d80",
      "m1": "سخن نزد دانندگان خوارنیست",
      "m2": "تو را اندرین کار دیدار نیست",
      "verse_number": 44
    },
    {
      "id": "4721211c-81b7-436a-a273-d5fa44c376f0",
      "m1": "اگر سعد با تاج ساسان بدی",
      "m2": "مرا رزم او کردن آسان بدی",
      "verse_number": 45
    },
    {
      "id": "97f504bb-8611-4e72-8268-b624d94f8776",
      "m1": "ولیکن بدان کاخترت بیوفاست",
      "m2": "چه گوییم کامروز روز بلاست",
      "verse_number": 46
    },
    {
      "id": "d5d26271-3f00-4aa3-8ea9-c139df7a08f9",
      "m1": "تو را گر محمد بود پیش رو",
      "m2": "بدین کهن گویم از دین نو",
      "verse_number": 47
    },
    {
      "id": "55663eb4-f40d-4287-8f4d-aa18adacf64b",
      "m1": "همان کژ پرگار این گوژپشت",
      "m2": "بخواهد همیبود با ما درشت",
      "verse_number": 48
    },
    {
      "id": "3662688d-68b9-4a77-adab-6c71004ae791",
      "m1": "تو اکنون بدین خرمی بازگرد",
      "m2": "که جای سخن نیست روز نبرد",
      "verse_number": 49
    },
    {
      "id": "eb3d396f-a6ec-442f-a34e-4d340bcd7719",
      "m1": "بگویش که در جنگ مردن به نام",
      "m2": "به از زنده دشمن بدو شادکام",
      "verse_number": 50
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 50
  },
  "order_in_parent": 4
}