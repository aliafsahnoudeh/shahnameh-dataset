{
  "id": "ca2a35e7-4486-46dd-9142-b81c92cbfcaf",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "8546afc6-9267-478b-a52a-6e3e2169fb8e",
      "m1": "یکی نامه بنوشت دیگر بطوس",
      "m2": "پر از خون دل و روی چون سندروس",
      "verse_number": 1
    },
    {
      "id": "a02083aa-44a4-48be-9c5e-d749c04901cc",
      "m1": "نخست آفرین کرد بر دادگر",
      "m2": "کزو دید نیرو و بخت و هنر",
      "verse_number": 2
    },
    {
      "id": "87a7e360-d18a-4bf9-b3ee-1de77bb71d24",
      "m1": "خداوند پیروزی و فرهی",
      "m2": "خداوند دیهیم شاهنشهی",
      "verse_number": 3
    },
    {
      "id": "c6da1a78-a87a-47c4-94a5-e3318a0539ce",
      "m1": "پی پشه تا پر و چنگ عقاب",
      "m2": "به خشکی چو پیل و نهنگ اندر آب",
      "verse_number": 4
    },
    {
      "id": "509e604d-1ab9-4e77-b304-f5e87c4b2322",
      "m1": "ز پیمان و فرمان او نگذرد",
      "m2": "دم خویش بی رای او نشمرد",
      "verse_number": 5
    },
    {
      "id": "30fe078d-d983-4e98-b25c-dfae312a980e",
      "m1": "ز شاه جهان یزدگرد بزرگ",
      "m2": "پدر نامور شهریار سترگ",
      "verse_number": 6
    },
    {
      "id": "afedb904-1bf9-44c8-a711-58937a503287",
      "m1": "سپهدار یزدان پیروزگر",
      "m2": "نگهبان جنبده و بوم و بر",
      "verse_number": 7
    },
    {
      "id": "faadbfc9-c584-4536-8bca-78d9b665f05e",
      "m1": "ز تخم بزرگان یزدانشناس",
      "m2": "که از تاج دارند از اختر سپاس",
      "verse_number": 8
    },
    {
      "id": "d19a1ece-a457-43c1-8fbc-34cd3f0360ba",
      "m1": "کزیشان شد آباد روی زمین",
      "m2": "فروزندهٔ تاج و تخت و نگین",
      "verse_number": 9
    },
    {
      "id": "5cd5b597-6f81-484f-b11b-7c1b8b205f08",
      "m1": "سوی مرزبانان با گنج و گاه",
      "m2": "که با فر و برزند و با داد و راه",
      "verse_number": 10
    },
    {
      "id": "5f4ab435-e3fd-48eb-9958-6992414fc660",
      "m1": "شمیران و روییندژ و رابهکوه",
      "m2": "کلات از دگر دست و دیگر گروه",
      "verse_number": 11
    },
    {
      "id": "f55e3396-ab50-4656-b9d8-537d9761b22e",
      "m1": "نگهبان ما باد پروردگار",
      "m2": "شما بیگزند از بد روزگار",
      "verse_number": 12
    },
    {
      "id": "8eab209a-c154-4f23-8133-fa6dbf37c78f",
      "m1": "مبادا گزند سپهر بلند",
      "m2": "مه پیکار آهرمن پرگزند",
      "verse_number": 13
    },
    {
      "id": "624e248c-20b9-4de9-a7fb-a630b1963c06",
      "m1": "همانا شنیدند گردنکشان",
      "m2": "خنیده شد اندر جهان این نشان",
      "verse_number": 14
    },
    {
      "id": "6dea2cf6-cf41-4645-8332-ca3908c00e28",
      "m1": "که بر کارزاری و مرد نژاد",
      "m2": "دل ما پرآزرم و مهرست و داد",
      "verse_number": 15
    },
    {
      "id": "4974f97e-c39c-4339-b681-dc3f9046fc53",
      "m1": "به ویژه نژاد شما را که رنج",
      "m2": "فزونست نزدیک شاهان ز گنج",
      "verse_number": 16
    },
    {
      "id": "256d0f51-6dd4-40aa-a60d-9a0a37d18684",
      "m1": "چو بهرام چوبینه آمد پدید",
      "m2": "ز فرمان دیهیم ما سرکشید",
      "verse_number": 17
    },
    {
      "id": "3d279835-61a9-41a8-bb67-38413386a601",
      "m1": "شما را دل از شهرهای فراخ",
      "m2": "بپیچید وز باغ و میدان و کاخ",
      "verse_number": 18
    },
    {
      "id": "4f058001-91bb-4d92-998b-0f9bcefb4c69",
      "m1": "برین باستان راع و کوه بلند",
      "m2": "کده ساختید از نهیب گزند",
      "verse_number": 19
    },
    {
      "id": "fa2752cc-0ec8-4d06-ab59-754017448cdc",
      "m1": "گر ای دون که نیرو دهد کردگار",
      "m2": "به کام دل ما شود روزگار",
      "verse_number": 20
    },
    {
      "id": "c46c58b7-3e3b-4bec-b3e1-49f67bbf9a5b",
      "m1": "ز پاداش نیکی فزایش کنیم",
      "m2": "برین پیشدستی نیایش کنیم",
      "verse_number": 21
    },
    {
      "id": "ba2e719d-824b-46db-927e-7a054236b6c6",
      "m1": "همانا که آمد شما را خبر",
      "m2": "که ما را چه آمد ز اختر به سر",
      "verse_number": 22
    },
    {
      "id": "96636d4c-3818-4835-9685-3c68a947eaec",
      "m1": "ازین مارخوار اهرمن چهرگان",
      "m2": "ز دانایی و شرم بیبهرگان",
      "verse_number": 23
    },
    {
      "id": "9f7d7734-6063-448c-9f08-309ca0f07d05",
      "m1": "نه گنج و نه نام و نه تخت و نژاد",
      "m2": "همیداد خواهند گیتی بباد",
      "verse_number": 24
    },
    {
      "id": "68546c2d-60dd-4da7-abd1-c8410efe5f26",
      "m1": "بسی گنج و گوهر پراگنده شد",
      "m2": "بسی سر به خاک اندر آگنده شد",
      "verse_number": 25
    },
    {
      "id": "c414593d-0a3a-4a5e-a895-774e6fdd4006",
      "m1": "چنین گشت پرگار چرخ بلند",
      "m2": "که آید بدین پادشاهی گزند",
      "verse_number": 26
    },
    {
      "id": "d1cfcd35-9f26-4825-95e0-99aa5c6068ff",
      "m1": "ازین زاغساران بیآب و رنگ",
      "m2": "نه هوش و نه دانش نه نام و نه ننگ",
      "verse_number": 27
    },
    {
      "id": "4e0d4c10-6235-48a2-9f42-15dfa5c15e3d",
      "m1": "که نوشینروان دیده بود این به خواب",
      "m2": "کزین تخت بپراگند رنگ و آب",
      "verse_number": 28
    },
    {
      "id": "63df9b55-92f6-4737-a925-ddf1a45bdb7a",
      "m1": "چنان دید کز تازیان صدهزار",
      "m2": "هیونان مست و گسسته مهار",
      "verse_number": 29
    },
    {
      "id": "43d4f8e7-3759-42c1-83c9-9a00039a40e3",
      "m1": "گذر یافتندی به اروندرود",
      "m2": "نماندی برین بوم بر تار و پود",
      "verse_number": 30
    },
    {
      "id": "acbe5cfe-fbd0-42be-a543-5d0f0f476041",
      "m1": "به ایران و بابل نه کشت و درود",
      "m2": "به چرخ زحل برشدی تیرهدود",
      "verse_number": 31
    },
    {
      "id": "38660122-6c82-451f-a63d-3e275ba3763b",
      "m1": "هم آتش بمُردی به آتشکده",
      "m2": "شدی تیره نوروز و جشن سده",
      "verse_number": 32
    },
    {
      "id": "178628f9-6e95-4351-8953-c746ceecfee6",
      "m1": "از ایوان شاه جهان کنگره",
      "m2": "فتادی به میدان او یکسره",
      "verse_number": 33
    },
    {
      "id": "3bee188a-3274-4c31-b802-9be2185f9fa4",
      "m1": "کنون خواب را پاسخ آمد پدید",
      "m2": "ز ما بخت گردن بخواهد کشید",
      "verse_number": 34
    },
    {
      "id": "ebf80a74-2592-4e14-9db0-7359348fce6c",
      "m1": "شود خوار هر کس که هست ارجمند",
      "m2": "فرومایه را بخت گردد بلند",
      "verse_number": 35
    },
    {
      "id": "65a0502f-9aea-45ce-b4dc-8f45720521fd",
      "m1": "پراگنده گردد بدی در جهان",
      "m2": "گزند آشکارا و خوبی نهان",
      "verse_number": 36
    },
    {
      "id": "b38c1cbc-5962-4aed-b986-a57c448c8296",
      "m1": "بهَر کشوری در ستمگارهای",
      "m2": "پدید آید و زشت پتیارهای",
      "verse_number": 37
    },
    {
      "id": "3045ee63-6e41-46a1-9a9d-b9f504793b04",
      "m1": "نشان شب تیره آمد پدید",
      "m2": "همی روشنایی بخواهد پرید",
      "verse_number": 38
    },
    {
      "id": "a3eb49c6-4bf3-41e4-afca-9a59e9a51e88",
      "m1": "کنون ما به دستوری رهنمای",
      "m2": "همه پهلوانان پاکیزهرای",
      "verse_number": 39
    },
    {
      "id": "60fc336d-4a1b-4b1b-b4b5-b9c0e5660665",
      "m1": "به سوی خراسان نهادیم روی",
      "m2": "برِ مرزبانان دیهیمجوی",
      "verse_number": 40
    },
    {
      "id": "f02e4122-ea1d-4f9d-818e-bef0b2d82921",
      "m1": "ببینیم تا گردش روزگار",
      "m2": "چه گوید بدین رای نااستوار",
      "verse_number": 41
    },
    {
      "id": "6ff15fe9-2a08-43b2-9429-f8c8d0e635e2",
      "m1": "پس اکنون ز بهر کنارنگ طوس",
      "m2": "بدین سو کشیدیم پیلان و کوس",
      "verse_number": 42
    },
    {
      "id": "2337ffe2-e564-4c1b-980e-c38ecefabbd4",
      "m1": "فرخزاد با ما ز یک پوستست",
      "m2": "به پیوستگی نیز هم دوستست",
      "verse_number": 43
    },
    {
      "id": "3ba50050-209b-40de-b5b9-13c0b62413fe",
      "m1": "بالتونیهست او کنون رزمجوی",
      "m2": "سوی جنگ دشمن نهادست روی",
      "verse_number": 44
    },
    {
      "id": "17539a7b-0fcc-4f6a-9bb4-4aea68361caa",
      "m1": "کنون کشمگان پور آن رزمخواه",
      "m2": "بر ما بیامد بدین بارگاه",
      "verse_number": 45
    },
    {
      "id": "7756a23e-84ed-453a-9543-e6d02e1fb938",
      "m1": "بگفت آنچ آمد ز شایستگی",
      "m2": "هم از بندگی هم ز بایستگی",
      "verse_number": 46
    },
    {
      "id": "acf63b57-4abf-4227-a952-5a87858b9574",
      "m1": "شیندیم زین مرزها هرچ گفت",
      "m2": "بلندی و پستی و غار و نهفت",
      "verse_number": 47
    },
    {
      "id": "104b01eb-488f-47ce-86bf-19e26e0e304e",
      "m1": "دژ گنبدین کوه تا خرمنه",
      "m2": "دگر لاژوردین ز بهر بنه",
      "verse_number": 48
    },
    {
      "id": "d31c7243-33f9-4fb4-a189-b1f672e9f98a",
      "m1": "ز هر گونه بنمود آن دل گسل",
      "m2": "ز خوبی نمود آنچ بودش به دل",
      "verse_number": 49
    },
    {
      "id": "3fda3c86-772d-4637-9723-ca734b20e3eb",
      "m1": "وزین جایگه شد بهَر جای کس",
      "m2": "پژوهنده شد کارها پیش و پس",
      "verse_number": 50
    },
    {
      "id": "8c4ef4ad-910c-41f3-b3bc-2705d87661ef",
      "m1": "چنین لشکری گشن ما را که هست",
      "m2": "برین تنگدژها نشاید نشست",
      "verse_number": 51
    },
    {
      "id": "64ab8f63-96b6-4807-b472-f973003db095",
      "m1": "نشستیم و گفتنیم با رایزن",
      "m2": "همه پهلوانان شدند انجمن",
      "verse_number": 52
    },
    {
      "id": "5229f29f-6882-49c3-ada1-96338d9f06e4",
      "m1": "ز هر گونه گفتیم و انداختیم",
      "m2": "سرانجام یکسر برین ساختیم",
      "verse_number": 53
    },
    {
      "id": "683bcd5f-fe11-4743-a1bb-63b0a30c23ca",
      "m1": "که از تاج و ز تخت و مهر و نگین",
      "m2": "همان جامهٔ روم و کشمیر و چین",
      "verse_number": 54
    },
    {
      "id": "1fe01fbd-d6af-44ac-abca-bb8373091dd7",
      "m1": "ز پرمایه چیزی که آمد بدست",
      "m2": "ز روم و ز طایف همه هرچ هست",
      "verse_number": 55
    },
    {
      "id": "24020c3c-cb87-4bc3-99c4-4b90182a091e",
      "m1": "همان هرچه از ما پراگند نیست",
      "m2": "گر از پوشش است ار ز افگندنیست",
      "verse_number": 56
    },
    {
      "id": "7568c37e-259c-4928-b777-3ca582cf98a1",
      "m1": "ز زرینه و جامهٔ نابرید",
      "m2": "ز چیزی که آن را نشاید کشید",
      "verse_number": 57
    },
    {
      "id": "9aec4065-e4c5-4cb4-9a35-3a928511e888",
      "m1": "هم از خوردنیها ز هر گونه ساز",
      "m2": "که ما را بیاید برو بر نیاز",
      "verse_number": 58
    },
    {
      "id": "6c571ab4-484c-4d15-91d4-5f1cf95f32dd",
      "m1": "ز گاوان گردونکشان چلهزار",
      "m2": "که رنج آورد تا که آید به کار",
      "verse_number": 59
    },
    {
      "id": "613352cc-5a96-4c0d-95a7-f33a46781955",
      "m1": "به خروار زان پس ده و دو هزار",
      "m2": "به خوشه درون گندم آرد ببار",
      "verse_number": 60
    },
    {
      "id": "bda063ad-e9b5-46f6-863c-17cc3f198e30",
      "m1": "همان ارزن و پسته و ناردان",
      "m2": "بیارد یکی موبدی کاردان",
      "verse_number": 61
    },
    {
      "id": "1ff58c83-063c-4991-9ae7-d0f4ef7456f2",
      "m1": "شتروار زین هر یکی دههزار",
      "m2": "هیونان بختی بیارند بار",
      "verse_number": 62
    },
    {
      "id": "583ccdce-da66-49e7-a413-02ac8e2a822b",
      "m1": "همان گاو گردون هزار از نمک",
      "m2": "بیارند تا بر چه گردد فلک",
      "verse_number": 63
    },
    {
      "id": "8eb4d0cb-82a6-4ef5-8af0-83de59bf5530",
      "m1": "ز خرما هزار و ز شکر هزار",
      "m2": "بود سخته و راستکرده شمار",
      "verse_number": 64
    },
    {
      "id": "91aaec7d-cd48-4f3b-b680-1ebbe6893b03",
      "m1": "ده و دو هزار انگبین کندره",
      "m2": "بدژها کشند آن همه یکسره",
      "verse_number": 65
    },
    {
      "id": "a8eca018-6868-4401-b93c-b09cee791804",
      "m1": "نمک خورده سر پوست چون چلهزار",
      "m2": "بیارند آن را که آید به کار",
      "verse_number": 66
    },
    {
      "id": "b9d4ddee-c343-4869-a050-e053e6c4b89d",
      "m1": "شتروار سیصد ز زربفت شاه",
      "m2": "بیارند بر بارها تا دو ماه",
      "verse_number": 67
    },
    {
      "id": "e885a99b-5505-47ff-b260-3f2fff65798d",
      "m1": "بیاید یکی موبدی با گروه",
      "m2": "ز گاه شمیران و از رابهکوه",
      "verse_number": 68
    },
    {
      "id": "e25cfdc8-c6a1-4804-9844-4f9a257d5352",
      "m1": "به دیدار پیران و فرهنگیان",
      "m2": "بزرگان کهاَند از کنارنگیان",
      "verse_number": 69
    },
    {
      "id": "5759bb9b-25ae-4f2d-80f5-9d0779490d6c",
      "m1": "به دو روز نامه به دژها نهند",
      "m2": "یکی نامه گنجور ما را دهند",
      "verse_number": 70
    },
    {
      "id": "2062639d-0a64-4572-bd39-484a30e9bb18",
      "m1": "دگر خود بدارند با خویشتن",
      "m2": "بزرگان که باشند زان انجمن",
      "verse_number": 71
    },
    {
      "id": "556eb61f-3e2c-440c-9112-00b94c20593b",
      "m1": "همانا بران راغ و کوه بلند",
      "m2": "ز ترک و ز تازی نیاید گزند",
      "verse_number": 72
    },
    {
      "id": "1cd92929-e5c9-478c-971f-1c2d91e906bb",
      "m1": "شما را بدین روزگار سترگ",
      "m2": "یکی دست باشد بر ما بزرگ",
      "verse_number": 73
    },
    {
      "id": "4edf9c12-223c-465b-b5ba-4d1f2f8cb3ab",
      "m1": "هنرمند گوینده دستور ما",
      "m2": "بفرماید اکنون به گنجور ما",
      "verse_number": 74
    },
    {
      "id": "16d0d0e5-9378-4bb2-9201-b98afe2e54b3",
      "m1": "که هر کس این را ندارد به رنج",
      "m2": "فرستد ورا پارسی جامه پنج",
      "verse_number": 75
    },
    {
      "id": "f88538ed-12ee-46b6-b41f-a7da6a1d6c3e",
      "m1": "یکی خوب سربند پیکر به زر",
      "m2": "بیابند فرجام زین کار بر",
      "verse_number": 76
    },
    {
      "id": "7e79c5f2-2b14-40d6-8528-7749fb5e1164",
      "m1": "بدین روزگار تباه و دژم",
      "m2": "بیابد ز گنجور ما چل درم",
      "verse_number": 77
    },
    {
      "id": "d65b5b5a-709f-4eda-a1d5-53473d5eafe5",
      "m1": "به سنگ کسی کو بود زیردست",
      "m2": "یکی زین درمها گر آید بدست",
      "verse_number": 78
    },
    {
      "id": "731c9600-1a95-4604-8565-e11809a7761f",
      "m1": "از آن شست بر سر شش و چاردانگ",
      "m2": "بیارد نبشته بخواند به بانگ",
      "verse_number": 79
    },
    {
      "id": "80ef0c05-066d-4775-8ca6-613c69e18017",
      "m1": "بیک روی بر نام یزدان پاک",
      "m2": "کزویَست امید و زو ترس و باک",
      "verse_number": 80
    },
    {
      "id": "f620bc42-5681-4663-a87b-93427b2b3c65",
      "m1": "دگر پیکرش افسر و چهر ما",
      "m2": "زمین بارور گشته از مهر ما",
      "verse_number": 81
    },
    {
      "id": "c78adc53-a35f-4080-ba12-1931054c416c",
      "m1": "به نوروز و مهر آن هم آراستست",
      "m2": "دو جشن بزرگست و با خواستست",
      "verse_number": 82
    },
    {
      "id": "cb25745c-6299-4b14-bc41-42d8b4cb51f1",
      "m1": "درود جهان بر کمآزارمرد",
      "m2": "کسی کو ز دیهیم ما یاد کرد",
      "verse_number": 83
    },
    {
      "id": "aa469d0e-d75a-4863-94dc-46e4f8cf0422",
      "m1": "بلند اختری نامجویی سوار",
      "m2": "بیامد به کف نامهٔ شهریار",
      "verse_number": 84
    }
