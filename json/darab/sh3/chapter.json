{
  "id": "dc25ca38-43d2-426a-bb0f-256b75aabbb5",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "bfb23d71-9074-4fab-b219-82d7b49c767e",
      "m1": "شد از جنگ نیزهوران تا به روم",
      "m2": "همی جست رزم اندر آباد بوم",
      "verse_number": 1
    },
    {
      "id": "1c2ee864-da86-41a5-a1dd-419a183cea90",
      "m1": "به روم اندرون شاه بدفیلقوس",
      "m2": "کجا بود با رای او شاه سوس",
      "verse_number": 2
    },
    {
      "id": "ed146034-62cd-437a-afb5-c65c5a3826d4",
      "m1": "نوشتند نامه که پور همای",
      "m2": "سپاهی بیاورد بیمر ز جای",
      "verse_number": 3
    },
    {
      "id": "06e2ff69-378d-42e1-9933-b4f2b5e21af7",
      "m1": "چو بشنید سالار روم این سخن",
      "m2": "به یاد آمدش روزگار کهن",
      "verse_number": 4
    },
    {
      "id": "059ef484-be4e-46d5-a67d-5037f2d66701",
      "m1": "ز عموریه لشکری گرد کرد",
      "m2": "همه نامداران روز نبرد",
      "verse_number": 5
    },
    {
      "id": "4127d218-c4fb-4f3d-a954-68bd35ff3257",
      "m1": "چو دارا بیامد بزرگان روم",
      "m2": "بپرداختند آن همه مرز و بوم",
      "verse_number": 6
    },
    {
      "id": "c78e7fc0-1087-443d-a090-953f271eeff6",
      "m1": "ز عموریه فیلقوس و سران",
      "m2": "برفتند گردان و جنگاوران",
      "verse_number": 7
    },
    {
      "id": "0fe36b2f-63f9-4a4c-9abb-27a4323cb279",
      "m1": "دو رزم گران کرده شد در سه روز",
      "m2": "چهارم چو بفروخت گیتی فروز",
      "verse_number": 8
    },
    {
      "id": "26b4b06f-e81c-4c1d-b089-5093404bbc8b",
      "m1": "گریزان بشد فیلقوس و سپاه",
      "m2": "یکی را نبد ترگ و رومی کلاه",
      "verse_number": 9
    },
    {
      "id": "052a889a-9507-44ad-8a8f-e8ea5029e950",
      "m1": "زن و کودکان نیز کردند اسیر",
      "m2": "بکشتند چندی به شمشیر و تیر",
      "verse_number": 10
    },
    {
      "id": "6e155b12-ea0b-4ece-b3ec-b167b02d41f0",
      "m1": "چو از پیش دارا به شهر آمدند",
      "m2": "ازان رفته لشکر دو بهر آمدند",
      "verse_number": 11
    },
    {
      "id": "f1f9a59f-b0a1-4c4f-843f-061a6132c608",
      "m1": "دگر پیشتر کشته و خسته بود",
      "m2": "پس پشتشان نیزه پیوسته بود",
      "verse_number": 12
    },
    {
      "id": "74e7c84b-6cc9-4a43-ae17-a0bc037b8a32",
      "m1": "به عموریه در حصاری شدند",
      "m2": "ازیشان بسی زینهاری شدند",
      "verse_number": 13
    },
    {
      "id": "42d76117-8443-441c-99d5-0b434b9998af",
      "m1": "فرستادهای آمد از فیلقوس",
      "m2": "خردمند و بیدار و با نعم و بوس",
      "verse_number": 14
    },
    {
      "id": "333c8ac5-7a9a-4add-a89a-7699ce350eb2",
      "m1": "ابا برده و بدره و با نثار",
      "m2": "دو صندوق پرگوهر شاهوار",
      "verse_number": 15
    },
    {
      "id": "4d5dee4f-e33c-4c06-a970-e7abe380b3c1",
      "m1": "چنین بود پیغام کز یک خدای",
      "m2": "بخواهم که او باشدم رهنمای",
      "verse_number": 16
    },
    {
      "id": "1989fc9b-fd29-4972-953a-586c98c8569d",
      "m1": "که فرجام این رزم بزم آوریم",
      "m2": "مبادا که دل سوی رزم آوریم",
      "verse_number": 17
    },
    {
      "id": "0f8e0bb7-f371-446d-b3ba-16392f7442e9",
      "m1": "همه راستی باید و مردمی",
      "m2": "ز کژی و آزار خیزد کمی",
      "verse_number": 18
    },
    {
      "id": "2144b92d-f083-4294-bde6-34010fba49ba",
      "m1": "چو عموریه کان نشست منست",
      "m2": "تو آیی و سازی که گیری بدست",
      "verse_number": 19
    },
    {
      "id": "a3e38ca0-9fed-46c6-86a9-df8cd80d2b46",
      "m1": "دل من به جوش آید از نام و ننگ",
      "m2": "به هنگام بزم اندر آیم به جنگ",
      "verse_number": 20
    },
    {
      "id": "cc5937ed-bcb9-4393-a0e4-ce49b1c1e484",
      "m1": "تو آن کن که از شهریاران سزاست",
      "m2": "پدر شاه بود و پسر پادشاست",
      "verse_number": 21
    },
    {
      "id": "c89ecdea-7a07-4699-919d-1aeb612c8c6e",
      "m1": "چو بشنید آزادگانرا بخواند",
      "m2": "همه داستان پیش ایشان براند",
      "verse_number": 22
    },
    {
      "id": "ae52a64e-c678-4949-be18-0baa6ae427b3",
      "m1": "چه بینید گفت اندرین گفت و گوی",
      "m2": "بجوید همی فیلقوس آب روی",
      "verse_number": 23
    },
    {
      "id": "f777eb6d-6aa2-4a13-9553-c279e1f8c642",
      "m1": "همه مهتران خواندند آفرین",
      "m2": "که ای شاه بینادل و پاکدین",
      "verse_number": 24
    },
    {
      "id": "88a54dee-6be0-46ca-b348-e4b4603fb838",
      "m1": "شهنشاه بر مهتران مهتر است",
      "m2": "ز کار آن گزیند کجا در خور است",
      "verse_number": 25
    },
    {
      "id": "e28cb36f-c6b2-4c25-af23-ee44a7e77351",
      "m1": "یکی دختری دارد این نامدار",
      "m2": "به بالای سرو و به رخ چون بهار",
      "verse_number": 26
    },
    {
      "id": "b3fd8b37-5b54-4048-91b2-16077b6a6eda",
      "m1": "بتآرای چون او نبیند به چین",
      "m2": "میان بتان چون درخشان نگین",
      "verse_number": 27
    },
    {
      "id": "e1421eab-78be-44ea-a5fe-91ddc4df8c86",
      "m1": "اگر شاه بیند پسند آیدش",
      "m2": "به پالیز سرو بلند آیدش",
      "verse_number": 28
    },
    {
      "id": "377fb100-9eff-4570-93b8-6430a4d2c63f",
      "m1": "فرستادهٔ روم را خواند شاه",
      "m2": "بگفت آنچ بشنید از نیکخواه",
      "verse_number": 29
    },
    {
      "id": "09627439-f3b2-4cfe-9327-2abed0a704ab",
      "m1": "بدو گفت رو پیش قیصر بگوی",
      "m2": "اگر جست خواهی همی آب روی",
      "verse_number": 30
    },
    {
      "id": "f79db852-239f-4724-91a1-69bf71d9cb25",
      "m1": "پس پردهٔ تو یکی دختر است",
      "m2": "که بر تارک بانوان افسر است",
      "verse_number": 31
    },
    {
      "id": "07ce68f8-e85b-4409-8b8c-42eca2385683",
      "m1": "نگاری که ناهید خوانی ورا",
      "m2": "بر اورنگ زرین نشانی ورا",
      "verse_number": 32
    },
    {
      "id": "57f85d0c-a08e-4b49-84a6-ea21ce3e9fb7",
      "m1": "به من بخش و بفرست با باژ روم",
      "m2": "چو خواهی که بیرنج ماندت بوم",
      "verse_number": 33
    },
    {
      "id": "225f263c-4b5c-4058-82ef-ddb13bf41c3a",
      "m1": "فرستاده بشنید و آمد چو باد",
      "m2": "به قیصر بر آن گفتها کرد یاد",
      "verse_number": 34
    },
    {
      "id": "4d4737e5-f618-4db8-b730-d93780b1dd36",
      "m1": "بدان شاد شد فیلقوس و سپاه",
      "m2": "که داماد باشد مر او را چو شاه",
      "verse_number": 35
    },
    {
      "id": "2052d333-e113-4b84-ba89-6655b78f44d5",
      "m1": "سخن گفت هرگونه از باژ و ساو",
      "m2": "ز چیزی که دارد پی روم تاو",
      "verse_number": 36
    },
    {
      "id": "75b859f4-d194-4fc3-acf6-c36733a027de",
      "m1": "بران بر نهادند سالی که شاه",
      "m2": "ستاند ز قیصر که دارد سپاه",
      "verse_number": 37
    },
    {
      "id": "4cfaa740-6bc5-415d-92f6-0d9dd2286832",
      "m1": "ز زر خایهٔ ریخته صدهزار",
      "m2": "ابا هر یکی گوهر شاهوار",
      "verse_number": 38
    },
    {
      "id": "2b7210e6-a3e9-4084-a6cd-7739ab736900",
      "m1": "چهل کرده مثقال هر خایهای",
      "m2": "همان نیز گوهر گرانمایهای",
      "verse_number": 39
    },
    {
      "id": "1d2213ad-2d9e-4e9e-ae1a-6c4ce7478d89",
      "m1": "ببخشید بر مرزبانان روم",
      "m2": "هرانکس که بودند ز آباد بوم",
      "verse_number": 40
    },
    {
      "id": "b389fe3d-b77b-4520-b96a-59045fa0d532",
      "m1": "ازان پس همه فیلسوفان شهر",
      "m2": "هرانکس که بودش ازان شهر بهر",
      "verse_number": 41
    },
    {
      "id": "838dd3f3-f253-45d9-88b9-863c2fa30d7f",
      "m1": "بفرمود تا راه را ساختند",
      "m2": "ز هر کار دل را بپرداختند",
      "verse_number": 42
    },
    {
      "id": "9cbddd59-44c6-414b-a751-b046420eead5",
      "m1": "برفتند با دختر شهریار",
      "m2": "گرانمایگان هریکی با نثار",
      "verse_number": 43
    },
    {
      "id": "0e494f46-c129-420b-821d-37bde538fb8b",
      "m1": "یکی مهر زرین بیاراستند",
      "m2": "پرستندهٔ تاجور خواستند",
      "verse_number": 44
    },
    {
      "id": "63e7ac5a-d553-4192-9863-2699d0794a4c",
      "m1": "ده استر همه بار دیبای روم",
      "m2": "بسی پیکر از گوهر و زر بوم",
      "verse_number": 45
    },
    {
      "id": "71266198-c8c5-4e85-a96f-af4ce87ee89f",
      "m1": "شتروار سیصد ز گستردنی",
      "m2": "ز چیزی که بد راه را بردنی",
      "verse_number": 46
    },
    {
      "id": "76fe2f31-0b8f-4d62-9213-ee316021bb52",
      "m1": "دلارای رومی به مهد اندرون",
      "m2": "سکوبا و راهب ورا رهنمون",
      "verse_number": 47
    },
    {
      "id": "64d3fb80-720e-44c9-a9cc-ed45e084ed9d",
      "m1": "کنیزک پس پشت ناهید شست",
      "m2": "ازان هریکی جامی از زر بدست",
      "verse_number": 48
    },
    {
      "id": "919c2a39-c49f-4f3e-baa5-03d3aed8b5c4",
      "m1": "به جام اندرون گوهر شاهوار",
      "m2": "بتآرای با افسر و گوشوار",
      "verse_number": 49
    },
    {
      "id": "125f6507-9ca8-4602-8578-d339c64896e9",
      "m1": "سقف خوب رخ را به دارا سپرد",
      "m2": "گهرها به گنجور او برشمرد",
      "verse_number": 50
    },
    {
      "id": "6ee3789a-5cfb-490f-bc92-541301d43e06",
      "m1": "ازان پس بران رزمگه بس نماند",
      "m2": "سپه را سوی شهر ایران براند",
      "verse_number": 51
    },
    {
      "id": "528bdb2e-3acd-4775-b099-71473cd56a5e",
      "m1": "سوی پارس آمد دلارام و شاد",
      "m2": "کلاه بزرگی بسر بر نهاد",
      "verse_number": 52
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 52
  },
  "order_in_parent": 3
}