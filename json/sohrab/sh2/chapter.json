{
  "id": "75961340-995f-4555-80f5-3d4638faa60a",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "86047352-c754-4553-ba45-f6f38bd7a29c",
      "m1": "ز گفتار دهقان یکی داستان",
      "m2": "بپیوندم از گفتهٔ باستان",
      "verse_number": 1
    },
    {
      "id": "09bb65e9-9b78-4679-975d-c1bbff5f7cf4",
      "m1": "ز موبد برین گونه بر داشت یاد",
      "m2": "که رستم یکی روز از بامداد",
      "verse_number": 2
    },
    {
      "id": "b25be916-60e5-4c31-811e-1559eddd345a",
      "m1": "غمی بد دلش ساز نخچیر کرد",
      "m2": "کمر بست و ترکش پر از تیر کرد",
      "verse_number": 3
    },
    {
      "id": "bcbbff47-2028-421d-a829-82a794ed7753",
      "m1": "سوی مرز توران چو بنهاد روی",
      "m2": "چو شیر دژآگاه نخچیرجوی",
      "verse_number": 4
    },
    {
      "id": "173fc892-b7f4-42bd-8f62-606e402de537",
      "m1": "چو نزدیکی مرز توران رسید",
      "m2": "بیابان سراسر پر از گور دید",
      "verse_number": 5
    },
    {
      "id": "f11957ce-8a1f-4d71-808a-ed385be56228",
      "m1": "برافروخت چون گل رخ تاجبخش",
      "m2": "بخندید وز جای برکند رخش",
      "verse_number": 6
    },
    {
      "id": "81ec5c9c-a10b-42ed-9953-d062869a6cc7",
      "m1": "به تیر و کمان و به گرز و کمند",
      "m2": "بیفگند بر دشت نخچیر چند",
      "verse_number": 7
    },
    {
      "id": "13d17332-6e9c-4b17-9ebd-e455e224c387",
      "m1": "ز خاشاک وز خار و شاخ درخت",
      "m2": "یکی آتشی برفروزید سخت",
      "verse_number": 8
    },
    {
      "id": "a5a972dd-ab9b-4645-b49d-f58652c8b3b2",
      "m1": "چو آتش پراگنده شد پیلتن",
      "m2": "درختی بجست از در بابزن",
      "verse_number": 9
    },
    {
      "id": "53680fb9-285c-4d3b-aef8-a96ac537a629",
      "m1": "یکی نره گوری بزد بر درخت",
      "m2": "که در چنگ او پر مرغی نسخت",
      "verse_number": 10
    },
    {
      "id": "4e4da382-34e3-4edc-a173-721ec86bd801",
      "m1": "چو بریان شد از هم بکند و بخورد",
      "m2": "ز مغز استخوانش برآورد گرد",
      "verse_number": 11
    },
    {
      "id": "21ca9aed-d740-4b7d-a2c5-bedf136fac96",
      "m1": "بخفت و برآسود از روزگار",
      "m2": "چمان و چران رخش در مرغزار",
      "verse_number": 12
    },
    {
      "id": "05aa84d9-a0f9-4e0a-8024-46c1fbe040c1",
      "m1": "سواران ترکان تنی هفت و هشت",
      "m2": "بران دشت نخچیرگه برگذشت",
      "verse_number": 13
    },
    {
      "id": "ef37f68a-bd88-43dd-9dd0-6c3771ae1adc",
      "m1": "یکی اسپ دیدند در مرغزار",
      "m2": "بگشتند گرد لب جویبار",
      "verse_number": 14
    },
    {
      "id": "01b9802f-6190-4491-9051-2d7aefd37181",
      "m1": "چو بر دشت مر رخش را یافتند",
      "m2": "سوی بند کردنش بشتافتند",
      "verse_number": 15
    },
    {
      "id": "65fce004-34cf-47d4-ba6b-9756452563d0",
      "m1": "گرفتند و بردند پویان به شهر",
      "m2": "همی هر یک از رخش جستند بهر",
      "verse_number": 16
    },
    {
      "id": "9994697a-c3d6-45c0-b536-39af0f8b17ba",
      "m1": "چو بیدار شد رستم از خواب خوش",
      "m2": "به کار امدش بارهٔ دستکش",
      "verse_number": 17
    },
    {
      "id": "8dd26c47-4ee1-4f4f-a49d-3535bb0a56d9",
      "m1": "بدان مرغزار اندرون بنگرید",
      "m2": "ز هر سو همی بارگی را ندید",
      "verse_number": 18
    },
    {
      "id": "37c817de-5590-4df1-8ec8-1801b004e1fd",
      "m1": "غمی گشت چون بارگی را نیافت",
      "m2": "سراسیمه سوی سمنگان شتافت",
      "verse_number": 19
    },
    {
      "id": "923f27df-669d-43a2-88e2-c54910a3514f",
      "m1": "همی گفت کاکنون پیاده دوان",
      "m2": "کجا پویم از ننگ تیرهروان",
      "verse_number": 20
    },
    {
      "id": "2e1b9f2e-da98-4e11-8cab-524eb28a1f50",
      "m1": "چه گویند گردان که اسپش که برد",
      "m2": "تهمتن بدین سان بخفت و بمرد",
      "verse_number": 21
    },
    {
      "id": "8a982d74-f95f-4aa6-90fa-f59a64b2b58e",
      "m1": "کنون رفت باید به بیچارگی",
      "m2": "سپردن به غم دل به یکبارگی",
      "verse_number": 22
    },
    {
      "id": "8e0ba89a-a55e-45c9-a7f7-b507b8e2c21f",
      "m1": "کنون بست باید سلیح و کمر",
      "m2": "به جایی نشانش بیابم مگر",
      "verse_number": 23
    },
    {
      "id": "afa9a80e-9d6b-4d1b-821c-9fc0c4874553",
      "m1": "همی رفت زین سان پر اندوه و رنج",
      "m2": "تن اندر عنا و دل اندر شکنج",
      "verse_number": 24
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 24
  }
}