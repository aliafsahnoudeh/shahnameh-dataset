{
  "id": "fd777192-018b-4452-861a-55a411ad0f82",
  "title": "بخش ۱۲",
  "verses": [
    {
      "id": "294ff8d5-7b7a-47b2-b12a-585709fb85fc",
      "m1": "چو خورشید گشت از جهان ناپدید",
      "m2": "شب تیره بر دشت لشکر کشید",
      "verse_number": 1
    },
    {
      "id": "fa8e8ffe-c9c5-4dc8-bc3b-4f1167245e4a",
      "m1": "تهمتن بیامد به نزدیک شاه",
      "m2": "میان بستهٔ جنگ و دل کینهخواه",
      "verse_number": 2
    },
    {
      "id": "51f54e0f-2ebb-4c55-8aca-ddedd840c93e",
      "m1": "که دستور باشد مرا تاجور",
      "m2": "از ایدر شوم بیکلاه و کمر",
      "verse_number": 3
    },
    {
      "id": "9da99d1c-0d61-4859-99b5-bb7f98ac12eb",
      "m1": "ببینم که این نوجهاندار کیست",
      "m2": "بزرگان کدامند و سالار کیست",
      "verse_number": 4
    },
    {
      "id": "aa33237a-2d44-4aab-a532-434891ebee3d",
      "m1": "بدو گفت کاووس کین کار تست",
      "m2": "که بیداردل بادی و تندرست",
      "verse_number": 5
    },
    {
      "id": "1c193dcc-c276-48e2-9387-2bc960a06b2d",
      "m1": "تهمتن یکی جامهٔ تُرکوار",
      "m2": "بپوشید و آمد دوان تا حصار",
      "verse_number": 6
    },
    {
      "id": "22454101-8cac-4b23-9ecd-c15ed01af217",
      "m1": "بیامد چو نزدیکیِ دژ رسید",
      "m2": "خروشیدنِ نوشِ تُرکان شنید",
      "verse_number": 7
    },
    {
      "id": "e68aca2f-821a-441c-b51b-1909027d604e",
      "m1": "بران دژ درون رفت مردِ دلیر",
      "m2": "چنان چون سوی آهوان نرهشیر",
      "verse_number": 8
    },
    {
      "id": "85d2ce5c-dfb5-4040-8f27-24b64da850a2",
      "m1": "چو سهراب را دید بر تختِ بزم",
      "m2": "نشسته به یک دست او ژندهرزم",
      "verse_number": 9
    },
    {
      "id": "9b253690-9694-4244-954c-18123c65ea65",
      "m1": "به دیگر چو هومان سوار دلیر",
      "m2": "دگر بارمان نامبُردار شیر",
      "verse_number": 10
    },
    {
      "id": "05ddb799-2ce2-49d8-aa8f-c95f041ce760",
      "m1": "تو گفتی همه تخت سهراب بود",
      "m2": "بسان یکی سروِ شاداب بود",
      "verse_number": 11
    },
    {
      "id": "e684b47e-814a-4be5-ba10-62880230b503",
      "m1": "دو بازو به کردار ران هَیون",
      "m2": "بَرش چون بَرِ پیل و چهره چو خون",
      "verse_number": 12
    },
    {
      "id": "3d0f35ca-6340-4406-b38a-cc6b1023c550",
      "m1": "ز تُرکان بگرد اندرش صد دلیر",
      "m2": "جوان و سرافراز چون نرهشیر",
      "verse_number": 13
    },
    {
      "id": "e0ac5b90-8120-45ad-85cd-2517535f7a92",
      "m1": "پرستار پنجاه با دستبند",
      "m2": "به پیش دلافروز تخت بلند",
      "verse_number": 14
    },
    {
      "id": "a9eed8d8-b992-4828-ba8a-8f2e68355c57",
      "m1": "همی یک به یک خواندند آفرین",
      "m2": "بران بُرز و بالا و تیغ و نگین",
      "verse_number": 15
    },
    {
      "id": "7d651c87-8397-4fca-866c-8dc12455b3bb",
      "m1": "همی دید رستم مَر او را ز دور",
      "m2": "نشست و نگه کرد مردانِ سور",
      "verse_number": 16
    },
    {
      "id": "349edc4e-4626-41d4-aa2d-532054e68760",
      "m1": "به شایستهکاری برون رفت ژند",
      "m2": "گَوی دید بَرسان سروِ بلند",
      "verse_number": 17
    },
    {
      "id": "a3123b3e-2d3f-4c29-8768-73bd2c24a0f0",
      "m1": "بدان لشکر اندر چُنو کس نبود",
      "m2": "بَرِ رستم آمد بپرسید زود",
      "verse_number": 18
    },
    {
      "id": "37c52e69-3240-4dde-ba72-39662b4a2e0c",
      "m1": "چه مردی بدو گفت با من بگوی",
      "m2": "سوی روشنی آی و بِنْمای روی",
      "verse_number": 19
    },
    {
      "id": "8d7551e6-4538-41ff-93e1-f566c5687e1f",
      "m1": "تهمتن یکی مشت بر گردنش",
      "m2": "بزد تیز و برشد روان از تنش",
      "verse_number": 20
    },
    {
      "id": "ea726631-2a8b-4f40-b76f-f642bcf0b2ce",
      "m1": "بدان جایگه خشک شد ژندهرزم",
      "m2": "نشد ژندهرزم آنگهی سوی بزم",
      "verse_number": 21
    },
    {
      "id": "5e5fe012-70cb-4a33-ba77-0c20e21a71f5",
      "m1": "زمانی همی بود سهراب دیر",
      "m2": "نیامد به نزدیک او ژند شیر",
      "verse_number": 22
    },
    {
      "id": "eb82043e-3583-470e-a8fc-e3410a99986a",
      "m1": "بپرسید سهراب تا ژندهرزم",
      "m2": "کجا شد که جایش تهی شد ز بزم",
      "verse_number": 23
    },
    {
      "id": "239643d1-5390-44d7-a3b3-433d929cef32",
      "m1": "برفتند و دیدنْش افگنده خوار",
      "m2": "برآسوده از بزم و از کارزار",
      "verse_number": 24
    },
    {
      "id": "25e6cc3f-693e-4dcd-807a-36e855f7afc8",
      "m1": "خروشان ازان درد بازآمدند",
      "m2": "شگفتیْ فرو مانده از کارِ ژَند",
      "verse_number": 25
    },
    {
      "id": "2a853b55-cafb-4389-bd05-06ad7daf7b90",
      "m1": "به سهراب گفتند شد ژندهرزم",
      "m2": "سرآمد بَرو روزِ پیگار و بزم",
      "verse_number": 26
    },
    {
      "id": "4e5ecbf8-329a-4891-84e1-a5145576363f",
      "m1": "چو بشنید سهراب برجست زود",
      "m2": "بیامد بَرِ ژنده برسان دود",
      "verse_number": 27
    },
    {
      "id": "4e6147b5-925c-4f24-a778-c061354da345",
      "m1": "اباچاکر و شمع و خنیاگران",
      "m2": "بیامد وُرا دید مُرده چنان",
      "verse_number": 28
    },
    {
      "id": "1784e53f-8440-4351-8495-a9888c9669d0",
      "m1": "شگفت آمدش سخت و خیره بماند",
      "m2": "دلیران و گردنکشان را بخواند",
      "verse_number": 29
    },
    {
      "id": "97d4863e-1d8e-4a73-b07b-9078d872db17",
      "m1": "چنین گفت کامشب نباید غُنود",
      "m2": "همهشب همی نیزه باید بسود",
      "verse_number": 30
    },
    {
      "id": "b34fcf01-6183-45e9-a3ef-0700dbf6a491",
      "m1": "که گرگ اندر آمد میان رمه",
      "m2": "سگ و مرد را آزمودش همه",
      "verse_number": 31
    },
    {
      "id": "98a969ed-3e3c-457a-a806-f785283003a6",
      "m1": "اگر یار باشد جهانآفرین",
      "m2": "چو نعل سمندم بساید زمین",
      "verse_number": 32
    },
    {
      "id": "2ec3374b-ecba-42cc-b1d1-cd55727894e6",
      "m1": "ز فِتراک زین برگشایم کمند",
      "m2": "بخواهم از ایرانیان کینِ ژند",
      "verse_number": 33
    },
    {
      "id": "85c5631e-8f5b-43a8-ba8e-a9ed5d31b134",
      "m1": "بیامد نشست از برِ گاه خویش",
      "m2": "گرانمایگان را همه خوانْد پیش",
      "verse_number": 34
    },
    {
      "id": "31c8ae65-8462-4b4c-8849-bbeb09c292a1",
      "m1": "که گر کم شد از تخت من ژندهرزم",
      "m2": "نیامد همی سیر جانم ز بزم",
      "verse_number": 35
    },
    {
      "id": "f52d3672-176b-4185-9867-6a0b89cd94e7",
      "m1": "چو برگشت رستم برِ شهریار",
      "m2": "از ایران سپه گیو بد پاسدار",
      "verse_number": 36
    },
    {
      "id": "e54c0144-d05d-41f4-aec4-5e905bd33262",
      "m1": "به ره بر گو پیلتن را بدید",
      "m2": "بزد دست و گرز از میان برکشید",
      "verse_number": 37
    },
    {
      "id": "3cbabfbe-22c1-478a-b097-e4d9442c4afd",
      "m1": "یکی بر خروشید چون پیل مست",
      "m2": "سپر بر سر آورد و بنمود دست",
      "verse_number": 38
    },
    {
      "id": "95882eda-c1cb-49db-a8da-2c7cf4b1518c",
      "m1": "بدانست رستم کز ایران سپاه",
      "m2": "به شب گیو باشد طلایه به راه",
      "verse_number": 39
    },
    {
      "id": "8469c843-de58-4c9f-8ca4-fe659ecac325",
      "m1": "بخندید و زان پس فغان برکشید",
      "m2": "طلایه چو آواز رستم شنید",
      "verse_number": 40
    },
    {
      "id": "cdaf6162-375e-4594-b79a-009e102fabdf",
      "m1": "بیامد پیاده به نزدیک اوی",
      "m2": "چنین گفت کای مهتر جنگجوی",
      "verse_number": 41
    },
    {
      "id": "7b963458-5a71-490e-9ce5-2cb184586088",
      "m1": "پیاده کجا بودهای تیره شب",
      "m2": "تهمتن به گفتار بگشاد لب",
      "verse_number": 42
    },
    {
      "id": "15107dc1-dde5-401b-b2d8-5c3b53f53a3f",
      "m1": "بگفتش به گیو آن کجا کرده بود",
      "m2": "چنان شیرمردی که آزرده بود",
      "verse_number": 43
    },
    {
      "id": "a1e4dc74-73b1-4d4d-b1c2-04650d6fb515",
      "m1": "وزان جایگه رفت نزدیک شاه",
      "m2": "ز ترکان سخن گفت وز بزمگاه",
      "verse_number": 44
    },
    {
      "id": "e77c54fa-4a75-42d3-93f5-5cdc48bd255f",
      "m1": "ز سهراب و از برز و بالای اوی",
      "m2": "ز بازوی و کتف دلارای اوی",
      "verse_number": 45
    },
    {
      "id": "0eeec8b8-32d2-4227-8de7-5bc253978e98",
      "m1": "که هرگز ز ترکان چنین کس نخاست",
      "m2": "بکردار سروست بالاش راست",
      "verse_number": 46
    },
    {
      "id": "8448968d-2e06-4788-b629-aa1eb56400ef",
      "m1": "به توران و ایران نماند به کس",
      "m2": "تو گویی که سام سوارست و بس",
      "verse_number": 47
    },
    {
      "id": "05b70645-919e-4f93-8dbb-8c88b4871169",
      "m1": "وزان مشت بر گردن ژندهرزم",
      "m2": "کزان پس نیامد به رزم و به بزم",
      "verse_number": 48
    },
    {
      "id": "f483b2cf-c6c2-4d88-bdaa-d65887cf68af",
      "m1": "بگفتند و پس رود و می خواستند",
      "m2": "همه شب همی لشکر آراستند",
      "verse_number": 49
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 49
  },
  "order_in_parent": 12
}