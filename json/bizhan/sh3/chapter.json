{
  "id": "17511e09-013d-4ae0-841e-7218da61dab4",
  "title": "بخش ۳",
  "verses": [
    {
      "id": "56a5b542-efe7-4a11-aca6-534dfbfaf193",
      "m1": "چو بگذشت یک چندگاه این چنین",
      "m2": "پس آگاهی آمد بدربان ازین",
      "verse_number": 1
    },
    {
      "id": "24e09c3e-931b-4a30-9480-c83af4629417",
      "m1": "نهفته همه کارشان بازجست",
      "m2": "بژرفی نگه کرد کار از نخست",
      "verse_number": 2
    },
    {
      "id": "26acafc8-6fd1-4f21-8451-9988ee2b62f2",
      "m1": "کسی کز گزافه سخن راندا",
      "m2": "درخت بلا را بجنباندا",
      "verse_number": 3
    },
    {
      "id": "64c8c44a-9b87-423e-b285-640139c5b0eb",
      "m1": "نگه کرد کو کیست و شهرش کجاست",
      "m2": "بدین آمدن سوی توران چراست",
      "verse_number": 4
    },
    {
      "id": "75cf5413-26e9-4be1-bac0-7c7e3c19a882",
      "m1": "بدانست و ترسان شد از جان خویش",
      "m2": "شتابید نزدیک درمان خویش",
      "verse_number": 5
    },
    {
      "id": "cc523e5a-03fc-46e4-9534-ab8bc452588e",
      "m1": "جز آگاه کردن ندید ایچ رای",
      "m2": "دوان از پس پرده برداشت پای",
      "verse_number": 6
    },
    {
      "id": "3d3dac89-f488-4082-b8cc-369dfc1a6ea6",
      "m1": "بیامد بر شاه ترکان بگفت",
      "m2": "که دختت ز ایران گزیدست جفت",
      "verse_number": 7
    },
    {
      "id": "643298d9-66b7-424c-a03b-2feee63e1f9f",
      "m1": "جهانجوی کرد از جهاندار یاد",
      "m2": "تو گفتی که بیدست هنگام باد",
      "verse_number": 8
    },
    {
      "id": "3b23a889-192e-4295-a476-a08e31d5e4e2",
      "m1": "بدست از مژه خون مژگان برفت",
      "m2": "برآشفت و این داستان باز گفت",
      "verse_number": 9
    },
    {
      "id": "418bc24b-79f1-4a33-94c3-5298ce1aa640",
      "m1": "کرا از پس پرده دختر بود",
      "m2": "اگر تاج دارد بداختر بود",
      "verse_number": 10
    },
    {
      "id": "55fdc786-7b21-40c3-9882-cc36a5af49d5",
      "m1": "کرا دختر آید بجای پسر",
      "m2": "به از گور داماد ناید بدر",
      "verse_number": 11
    },
    {
      "id": "1b3a1d52-5849-4076-bbb1-c7970ec9cfca",
      "m1": "ز کار منیژه دلش خیره ماند",
      "m2": "قراخان سالار را پیش خواند",
      "verse_number": 12
    },
    {
      "id": "55d30ec8-532d-41d2-87ae-63b05351695c",
      "m1": "بدو گفت ازین کار ناپاک زن",
      "m2": "هشیوار با من یکی رای زن",
      "verse_number": 13
    },
    {
      "id": "81d99257-e65e-42b8-96b7-f712531cf5c9",
      "m1": "قراخان چنین داد پاسخ بشاه",
      "m2": "که در کار هشیارتر کن نگاه",
      "verse_number": 14
    },
    {
      "id": "00b5b6d7-d005-445c-acb2-3abdeff54a21",
      "m1": "اگر هست خود جای گفتار نیست",
      "m2": "ولیکن شنیدن چو دیدار نیست",
      "verse_number": 15
    },
    {
      "id": "45f5b1c7-986f-4b1e-80bc-b5edc2866dba",
      "m1": "بگرسیوز آنگاه گفتش بدرد",
      "m2": "پر از خون دل و دیده پر آب زرد",
      "verse_number": 16
    },
    {
      "id": "ddcbadc0-2944-47c6-a679-e80a0d96878d",
      "m1": "زمانه چرا بندد این بند من",
      "m2": "غم شهر ایران و فرزند من",
      "verse_number": 17
    },
    {
      "id": "51cf4c98-53f4-48d1-8199-302e02bd4d19",
      "m1": "برو با سواران هشیار سر",
      "m2": "نگه دار مر کاخ را بام و در",
      "verse_number": 18
    },
    {
      "id": "dc8de367-a55f-4049-b3d7-5be41a7926fc",
      "m1": "نگر تا که بینی بکاخ اندرا",
      "m2": "ببند و کشانش بیار ایدرا",
      "verse_number": 19
    },
    {
      "id": "45963523-d183-416c-ae34-7f417b11feb3",
      "m1": "چو گرسیوز آمد بنزدیک در",
      "m2": "از ایوان خروش آمد و نوش و خور",
      "verse_number": 20
    },
    {
      "id": "347bab53-8c95-46b7-b473-95095e5185c5",
      "m1": "غریویدن چنگ و بانگ رباب",
      "m2": "برآمد ز ایوان افراسیاب",
      "verse_number": 21
    },
    {
      "id": "e9142978-dcc0-4521-b743-7040ae625a4c",
      "m1": "سواران در و بام آن کاخ شاه",
      "m2": "گرفتند و هر سو ببستند راه",
      "verse_number": 22
    },
    {
      "id": "11ca5de5-00e4-4393-a354-c9659439f1fd",
      "m1": "چو گر سیوز آن کاخ در بسته دید",
      "m2": "می و غلغل نوش پیوسته دید",
      "verse_number": 23
    },
    {
      "id": "3b81e7e8-53ba-40de-b62f-a2066470e132",
      "m1": "سواران گرفتندگرد اندرش",
      "m2": "چو سالار شد سوی بسته درش",
      "verse_number": 24
    },
    {
      "id": "df018479-d043-4db9-9271-f1b59dc330f3",
      "m1": "بزد دست و برکند بندش ز جای",
      "m2": "بجست از میان در اندر سرای",
      "verse_number": 25
    },
    {
      "id": "27bb807f-d879-4527-a3ef-f85abca39df0",
      "m1": "بیامد بنزدیک آن خانه زود",
      "m2": "کجا پیشگه مرد بیگانه بود",
      "verse_number": 26
    },
    {
      "id": "26d4b979-751f-4f57-b8a9-8a3602c32259",
      "m1": "ز در چون به بیژن برافگند چشم",
      "m2": "بچوشید خونش برگ بر ز خشم",
      "verse_number": 27
    },
    {
      "id": "3f6a204c-5a7e-4b38-8b21-43bf553dcb56",
      "m1": "در آن خانه سیصد پرستنده بود",
      "m2": "همه با رباب و نبید و سرود",
      "verse_number": 28
    },
    {
      "id": "e983c1f5-bc1d-4445-bcf5-c1ce1c6615bf",
      "m1": "بپیچید بر خویشتن بیژنا",
      "m2": "که چون رزم سازم برهنه تنا",
      "verse_number": 29
    },
    {
      "id": "4e3f9ad6-8e90-46fd-aa42-75bfff4ad4e8",
      "m1": "نه شبرنگ با من نه رهوار بور",
      "m2": "همانا که برگشتم امروز هور",
      "verse_number": 30
    },
    {
      "id": "6dd5effe-30a3-47f3-b866-0e97b70019e8",
      "m1": "ز گیتی نبینم همی یار کس",
      "m2": "بجز ایزدم نیست فریادرس",
      "verse_number": 31
    },
    {
      "id": "8b7cdeeb-ed54-4ed3-8d26-6eb01f8eb0a5",
      "m1": "کجا گیو و گودرز کشوادگان",
      "m2": "که سر داد باید همی رایگان",
      "verse_number": 32
    },
    {
      "id": "e3ca294b-00bb-4955-a45d-e05453e00564",
      "m1": "همیشه بیک ساق موزه درون",
      "m2": "یکی خنجری داشتی آبگون",
      "verse_number": 33
    },
    {
      "id": "8e9f759c-1005-4943-a52b-1dacfae6e51d",
      "m1": "بزد دست و خنجر کشید از نیام",
      "m2": "در خانه بگرفت و برگفت نام",
      "verse_number": 34
    },
    {
      "id": "a66366a0-49bb-4667-bf9c-30e4cfd442e9",
      "m1": "که من بیژنم پور کشوادگان",
      "m2": "سر پهلوانان و آزادگان",
      "verse_number": 35
    },
    {
      "id": "944e458b-9943-4da6-ab67-f5a54c9a4f89",
      "m1": "ندرد کسی پوست بر من مگر",
      "m2": "همی سیری آید تنش را ز سر",
      "verse_number": 36
    },
    {
      "id": "09b7fa6b-ad98-4328-a8eb-769e4411b4ac",
      "m1": "وگر خیزد اندر جهان رستخیز",
      "m2": "نبیند کسی پشتم اندر گریز",
      "verse_number": 37
    },
    {
      "id": "b77cb7f9-2cda-4606-8958-e3e19c0ea0b2",
      "m1": "تو دانی نیاکان و شاه مرا",
      "m2": "میان یلان پایگاه مرا",
      "verse_number": 38
    },
    {
      "id": "4115f88e-ba4d-48c0-b1f1-89b318539415",
      "m1": "وگر جنگ سازند مر جنگ را",
      "m2": "همیشه بشویم بخون چنگ را",
      "verse_number": 39
    },
    {
      "id": "7fa9cb62-8f51-4756-8d5f-c2ba74899c53",
      "m1": "ز تورانیان من بدین خنجرا",
      "m2": "ببرم فراوان سران را سرا",
      "verse_number": 40
    },
    {
      "id": "d7058eb0-8f75-439a-ad7b-ffab9ff76eec",
      "m1": "گرم نزد سالار توران بری",
      "m2": "بخوبی برو داستان آوری",
      "verse_number": 41
    },
    {
      "id": "aafbb2e3-d2e9-4755-aca4-3608e83215b8",
      "m1": "تو خواهشگری کن مرا زو بخون",
      "m2": "سزد گر بنیکی بوی رهنمون",
      "verse_number": 42
    },
    {
      "id": "0a09cacd-369b-424d-a277-5f2216218319",
      "m1": "نکرد ایچ گرسیوز آهنگ اوی",
      "m2": "چو دید آن چنان تیزی چنگ اوی",
      "verse_number": 43
    },
    {
      "id": "cc3b1dec-3dd2-40f1-a255-5a5279975e93",
      "m1": "بدانست کو راست گوید همی",
      "m2": "بخون ریختن دست شوید همی",
      "verse_number": 44
    },
    {
      "id": "bb0051ea-0420-453b-bf03-0726e38688f3",
      "m1": "وفا کرد با او بسوگندها",
      "m2": "بخوبی بدادش بسی پندها",
      "verse_number": 45
    },
    {
      "id": "9e4b30f1-c0be-48c0-a025-7dc41f6954fa",
      "m1": "بپیمان جدا کرد زو خنجرا",
      "m2": "بخوبی کشیدش ببند اندرا",
      "verse_number": 46
    },
    {
      "id": "23f989b0-5062-47cf-bda7-66f58c585926",
      "m1": "بیاورد بسته بکردار یوز",
      "m2": "چه سود از هنرها چو برگشت روز",
      "verse_number": 47
    },
    {
      "id": "6e233ca0-4b27-421c-bca2-29a10ea88719",
      "m1": "چنینست کردار این گوژپشت",
      "m2": "چو نرمی بسودی بیابی درشت",
      "verse_number": 48
    },
    {
      "id": "a4386d1c-7def-44d1-a0b0-6f826deb8b78",
      "m1": "چو آمد بنزدیک شاه اندرا",
      "m2": "گو دست بسته برهنه سرا",
      "verse_number": 49
    },
    {
      "id": "f125dbec-ed3a-4c3b-a1bf-ecfe3b8b681a",
      "m1": "برو آفرین کردکای شهریار",
      "m2": "گر از من کنی راستی خواستار",
      "verse_number": 50
    },
    {
      "id": "1ebb0b30-1bd3-4266-bb31-f0d88f8b2728",
      "m1": "بگویم ترا سربسر داستان",
      "m2": "چو گردی بگفتار همداستان",
      "verse_number": 51
    },
    {
      "id": "fb9ebcef-488c-4635-b28f-d980e00a96d2",
      "m1": "نه من بزرو جستم این جشنگاه",
      "m2": "نبود اندرین کار کس را گناه",
      "verse_number": 52
    },
    {
      "id": "1179c908-2ee0-4b19-8691-b5b1dc4a5024",
      "m1": "از ایران بجنگ گراز آمدم",
      "m2": "بدین جشن توران فراز آمدم",
      "verse_number": 53
    },
    {
      "id": "ec776aaa-d230-41e5-9393-6b0e8f6ea040",
      "m1": "ز بهر یکی باز گم بوده را",
      "m2": "برانداختم مهربان دوده را",
      "verse_number": 54
    },
    {
      "id": "8d4ef815-7776-4916-afe2-43277f3cb906",
      "m1": "بزیر یکی سرو رفتم بخواب",
      "m2": "که تا سایه دارد مرا ز آفتاب",
      "verse_number": 55
    },
    {
      "id": "34cce3c9-e6db-4c1d-b645-fd24917f83c8",
      "m1": "پری دربیامد بگسترد پر",
      "m2": "مرا اندر آورد خفته ببر",
      "verse_number": 56
    },
    {
      "id": "d4cd465a-3129-4a7e-8fcc-7b52e4b8015e",
      "m1": "از اسبم جدا کرد و شد تا براه",
      "m2": "که آمد همی لشکر و دخت شاه",
      "verse_number": 57
    },
    {
      "id": "9c48332e-8f83-4fe9-9ff1-5cab982e46a1",
      "m1": "سواران پراگنده بر گرد دشت",
      "m2": "چه مایه عماری بمن برگذشت",
      "verse_number": 58
    },
    {
      "id": "e4657ad9-e2d2-47ae-b0fe-6dd3741acff9",
      "m1": "یکی چتر هندی برآمد ز دور",
      "m2": "ز هر سو گرفته سواران تور",
      "verse_number": 59
    },
    {
      "id": "a9898496-1e80-4ee8-9a2b-51f8ea6e5641",
      "m1": "یکی کرده از عود مهدی میان",
      "m2": "کشیده برو چادر پرنیان",
      "verse_number": 60
    },
    {
      "id": "09d1ff2a-c289-4e87-b50e-7e588e682724",
      "m1": "بدو اندرون خفته بت پیکری",
      "m2": "نهاده ببالین برش افسری",
      "verse_number": 61
    },
    {
      "id": "8806e60d-22db-420d-870c-2a5cf588a060",
      "m1": "پری یک بیک ز اهرمن کرد یاد",
      "m2": "میان سواران درآمد چو باد",
      "verse_number": 62
    },
    {
      "id": "401df411-275f-44d3-bcbe-c9c9ca702837",
      "m1": "مرا ناگهان در عماری نشاند",
      "m2": "بران خوب چهره فسونی بخواند",
      "verse_number": 63
    },
    {
      "id": "78d7d8ca-e612-48d5-8cbc-3cf9db4f1f75",
      "m1": "که تا اندر ایوان نیامد ز خواب",
      "m2": "نجنبید و من چشم کرده پر آب",
      "verse_number": 64
    },
    {
      "id": "ccdd3f03-3509-4d09-81da-d81f00300117",
      "m1": "گناهی مرا اندرین بوده نیست",
      "m2": "منیژه بدین کار آلوده نیست",
      "verse_number": 65
    },
    {
      "id": "b8a12644-1653-45aa-b28f-8fa0cd319f84",
      "m1": "پری بیگمان بخت برگشته بود",
      "m2": "که بر من همی جادوی آزمود",
      "verse_number": 66
    },
    {
      "id": "405e6a2b-e5f6-49ec-9e1f-10ede16d8861",
      "m1": "چنین بد که گفتم کم و بیش نه",
      "m2": "مرا ایدر اکنون کس و خویش نه",
      "verse_number": 67
    },
    {
      "id": "018dddcc-9c14-427d-ac3a-3513ce2f929d",
      "m1": "چنین داد پاسخ پس افراسیاب",
      "m2": "که بخت بدت کرد بر تو شتاب",
      "verse_number": 68
    },
    {
      "id": "9932b891-b028-4ece-b608-8e5ed5b1fdc1",
      "m1": "تو آنی کز ایران بتیغ و کمند",
      "m2": "همی رزم جستی به نام بلند",
      "verse_number": 69
    },
    {
      "id": "904e5e75-e87f-4ff5-b480-51a12b4fb370",
      "m1": "کنون چون زنان پیش من بسته دست",
      "m2": "همی خواب گویی به کردار مست",
      "verse_number": 70
    },
    {
      "id": "b3f4dedd-f6b4-456e-a2d6-ea925abce56d",
      "m1": "بکار دروغ آزمودن همی",
      "m2": "بخواهی سر از من ربودن همی",
      "verse_number": 71
    },
    {
      "id": "71351e5c-cc61-4a7b-b79e-af928ba88bb5",
      "m1": "بدو گفت بیژن که ای شهریار",
      "m2": "سخن بشنو از من یکی هوشیار",
      "verse_number": 72
    },
    {
      "id": "86bbbaa0-e0e0-49da-90e5-975a864c53ad",
      "m1": "گرازان بدندان و شیران بچنگ",
      "m2": "توانند کردن بهر جای جنگ",
      "verse_number": 73
    },
    {
      "id": "117e7643-c5d5-4bb2-a3b4-46e50381ccdd",
      "m1": "یلان هم بشمشیر و تیر و کمان",
      "m2": "توانند کوشید با بدگمان",
      "verse_number": 74
    },
    {
      "id": "4bb4e79d-e5f2-4f03-ab2a-efb02601b2c8",
      "m1": "یکی دست بسته برهنه تنا",
      "m2": "یکی را ز پولاد پیراهنا",
      "verse_number": 75
    },
    {
      "id": "b4dabda4-77a4-4af0-9aa9-bcf0e2633c29",
      "m1": "چگونه درد شیر بی چنگ تیز",
      "m2": "اگر چند باشد دلش پر ستیز",
      "verse_number": 76
    },
    {
      "id": "e5784968-7298-477c-bf49-944ec5b40ba2",
      "m1": "اگر شاه خواهد که بیند ز من",
      "m2": "دلیری نمودن بدین انجمن",
      "verse_number": 77
    },
    {
      "id": "6fe91f39-a5e9-42d4-8562-3cc8b9de0405",
      "m1": "یکی اسب فرمای و گرزی گران",
      "m2": "ز ترکان گزین کن هزار از سران",
      "verse_number": 78
    },
    {
      "id": "a725660f-bb3d-4744-952f-5605099aa64e",
      "m1": "به آوردگه بر یکی زین هزار",
      "m2": "اگر زنده مانم بمردم مدار",
      "verse_number": 79
    },
    {
      "id": "79657b9b-96f1-4cf8-8067-8f79c2e33aa3",
      "m1": "ز بیژن چو این گفته بشنید چشم",
      "m2": "بروبر فگند و برآورد خشم",
      "verse_number": 80
    },
    {
      "id": "c7a839c2-9735-49a1-9d8c-dd23ac3244e4",
      "m1": "بگرسیوز اندر یکی بنگرید",
      "m2": "کز ایران چه دیدیم و خواهیم دید",
      "verse_number": 81
    },
    {
      "id": "74e809fe-7d62-41b4-89e2-2008f38c828f",
      "m1": "نبینی که این بدکنش ریمنا",
      "m2": "فزونی سگالد همی بر منا",
      "verse_number": 82
    },
    {
      "id": "99ff0bb1-fa0a-4d74-b0ee-8d5041dd80e0",
      "m1": "بسنده نبودش همین بد که کرد",
      "m2": "همی رزم جوید بننگ و نبرد",
      "verse_number": 83
    },
    {
      "id": "9c7b70e8-b647-43b9-a4a7-d9f720a5ed71",
      "m1": "ببر همچنین بند بر دست و پای",
      "m2": "هم اندر زمان زو بپرداز جای",
      "verse_number": 84
    },
    {
      "id": "eecbec3a-338d-4c29-b5ab-dafe2a325daa",
      "m1": "بفرمای داری زدن پیش در",
      "m2": "که باشد ز هر سو برو رهگذر",
      "verse_number": 85
    },
    {
      "id": "a2f3c1c3-291b-425e-b963-a6cfcd6b4719",
      "m1": "نگون بخت را زنده بر دار کن",
      "m2": "وزو نیز با من مگردان سخن",
      "verse_number": 86
    },
    {
      "id": "2469991a-1ea9-49ae-8aae-114e5bfc26e1",
      "m1": "بدان تا ز ایرانیان زین سپس",
      "m2": "نیارد بتوران نگه کرد کس",
      "verse_number": 87
    },
    {
      "id": "ac38cddf-1d06-40a2-9128-e73b280d5ff9",
      "m1": "کشیدندش از پیش افراسیاب",
      "m2": "دل از درد خسته دو دیده پر آب",
      "verse_number": 88
    },
    {
      "id": "7fe58e96-6da9-41a3-9803-b33ccf749b97",
      "m1": "چو آمد بدر بیژن خسته دل",
      "m2": "ز خون مژه پای مانده بگل",
      "verse_number": 89
    },
    {
      "id": "0c29b774-e855-4392-b475-02f26fadc8a4",
      "m1": "همی گفت اگر بر سرم کردگار",
      "m2": "نوشتست مردن ببد روزگار",
      "verse_number": 90
    },
    {
      "id": "0382d8e1-aba9-423b-97ec-bfaab8e16188",
      "m1": "ز دار و ز کشتن نترسم همی",
      "m2": "ز گردان ایران بترسم همی",
      "verse_number": 91
    },
    {
      "id": "21d9c518-ca2a-43ef-9a6b-64ff3ae19b41",
      "m1": "که نامرد خواند مرا دشمنم",
      "m2": "ز ناخسته بردار کرده تنم",
      "verse_number": 92
    },
    {
      "id": "20039ccd-9d97-484f-8a0d-6a4724b25a6c",
      "m1": "بپیش نیاکان پهلو منش",
      "m2": "پس از مرگ بر من بود سرزنش",
      "verse_number": 93
    },
    {
      "id": "a84dcfc3-a32d-44e2-bd28-df79b5e4c9a8",
      "m1": "روانم بماند هم ایدر بجای",
      "m2": "ز شرم پدر چون شوم باز جای",
      "verse_number": 94
    },
    {
      "id": "f7120753-a168-4b53-a8ea-b35494f851be",
      "m1": "دریغا که شادان شود دشمنم",
      "m2": "چو بینند بر دار روشن تنم",
      "verse_number": 95
    },
    {
      "id": "44e12ffb-e7d2-4450-9daf-adaf4114f9d9",
      "m1": "دریغا ز شاه و ز مردان نیو",
      "m2": "دریغا که دورم ز دیدار گیو",
      "verse_number": 96
    },
    {
      "id": "947adbb6-eb29-44e9-af5d-0c58bbcf4b23",
      "m1": "ایا باد بگذر بایران زمین",
      "m2": "پیامی بر از من بشاه گزین",
      "verse_number": 97
    },
    {
      "id": "27e9804e-3b63-4329-b172-13609d8c64e6",
      "m1": "بگویش که بیژن بسختی درست",
      "m2": "چو آهو که در چنگ شیر نرست",
      "verse_number": 98
    }
  ],
