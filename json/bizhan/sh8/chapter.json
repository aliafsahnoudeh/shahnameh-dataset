{
  "id": "28031602-46c9-4c73-bf18-3d1c48c409aa",
  "title": "بخش ۸",
  "verses": [
    {
      "id": "a0413007-2ac5-42fd-9bfd-5d0fc80b8920",
      "m1": "چو گرگین نشان تهمتن شنید",
      "m2": "بدانست کآمد غمش را کلید",
      "verse_number": 1
    },
    {
      "id": "7ce94c93-20cc-4b58-9b81-d884ad3a1630",
      "m1": "فرستاد نزدیک رستم پیام",
      "m2": "که ای تیغ بخت و وفا را نیام",
      "verse_number": 2
    },
    {
      "id": "b88317d4-9e23-4174-bf3c-317c47c7f746",
      "m1": "درخت بزرگی و گنج وفا",
      "m2": "در رادمردی و بند بلا",
      "verse_number": 3
    },
    {
      "id": "fe51cac0-d629-4587-a449-a792f3f395f2",
      "m1": "گرت رنج ناید ز گفتار من",
      "m2": "سخن گسترانی ز کردار من",
      "verse_number": 4
    },
    {
      "id": "62222100-b00d-4e77-96c6-e03415ce0b6f",
      "m1": "نگه کن بدین گنبد گوژپشت",
      "m2": "که خیره چراغ دلم را بکشت",
      "verse_number": 5
    },
    {
      "id": "718dd248-bb4b-4c62-8c59-0fd06d5f0fff",
      "m1": "بتاریکی اندر مرا ره نمود",
      "m2": "نوشته چنین بود بود آنچ بود",
      "verse_number": 6
    },
    {
      "id": "c4b7f59b-9d7d-4cf8-86f3-38013f3d3b70",
      "m1": "بر آتش نهم خویشتن پیش شاه",
      "m2": "گر آمرزش آرد مرا زین گناه",
      "verse_number": 7
    },
    {
      "id": "491a3f5a-d025-4b3d-b488-9be78ce1d096",
      "m1": "مگر باز گردد ز بد نام من",
      "m2": "بپیران سر این بد سرانجام من",
      "verse_number": 8
    },
    {
      "id": "742b3fee-0d0a-47ea-9c16-7ad035e4ed37",
      "m1": "مرا گر بخواهی ز شاه جوان",
      "m2": "چو غرم ژیان با تو آیم دوان",
      "verse_number": 9
    },
    {
      "id": "6966ad59-aae7-4203-93e2-4f1214faa81a",
      "m1": "شوم پیش بیژن بغلتم بخاک",
      "m2": "مگر بازیابم من آن کیش پاک",
      "verse_number": 10
    },
    {
      "id": "372710d5-c5bf-48ee-9045-d1b2266bd0ca",
      "m1": "چو پیغام گرگین برستم رسید",
      "m2": "یکی باد سرد از جگر برکشید",
      "verse_number": 11
    },
    {
      "id": "1c932e9e-f44c-4f7b-a418-c5678d25f2a8",
      "m1": "بپیچید ازان درد و پیغام اوی",
      "m2": "غم آمدش ازان بیهده کام اوی",
      "verse_number": 12
    },
    {
      "id": "f64a1f08-7b3d-4a64-bcbd-078b506bfbb8",
      "m1": "فرستاده را گفت رو باز گرد",
      "m2": "بگویش که ای خیره ناپاک مرد",
      "verse_number": 13
    },
    {
      "id": "1074fa37-2e25-4da7-ab4e-b9a06a17a1ad",
      "m1": "تو نشنیدی آن داستان پلنگ",
      "m2": "بدان ژرف دریا که زد با نهنگ",
      "verse_number": 14
    },
    {
      "id": "eba4f621-78b2-4fcb-b03e-fb29b57985d3",
      "m1": "که گر بر خرد چیره گردد هوا",
      "m2": "نیابد ز چنگ هوا کس رها",
      "verse_number": 15
    },
    {
      "id": "bbac60dc-cc77-4701-b7c2-1ef81f0bb890",
      "m1": "خردمند کرد هوا را بزیر",
      "m2": "بود داستانش چو شیر دلیر",
      "verse_number": 16
    },
    {
      "id": "f4adf88a-4c95-4223-9387-92605343dc1e",
      "m1": "نبایدش بردن بنخچیر روی",
      "m2": "نه نیز از ددان رنجش آید بدوی",
      "verse_number": 17
    },
    {
      "id": "b6c61ac0-fad7-4745-9d0f-cbff5be4141d",
      "m1": "تو دستان نمودی چو روباه پیر",
      "m2": "ندیدی همی دام نخچیرگیر",
      "verse_number": 18
    },
    {
      "id": "bcfc33d3-7fe9-4f50-aa64-95ef14596ba6",
      "m1": "نشاید کزین بیهده کام تو",
      "m2": "که من پیش خسرو برم نام تو",
      "verse_number": 19
    },
    {
      "id": "84fe8594-45ff-4cdd-aa70-d7ea9010f0b9",
      "m1": "ولیکن چو اکنون ببیچارگی",
      "m2": "فرو مانده گشتی بیکبارگی",
      "verse_number": 20
    },
    {
      "id": "cb5e3785-7d41-4e4c-91cd-43b89bb34623",
      "m1": "ز خسرو بخواهم گناه ترا",
      "m2": "بیفروزم این تیره ماه ترا",
      "verse_number": 21
    },
    {
      "id": "e27e2231-a23d-499e-b3f4-c70a70490ac9",
      "m1": "اگر بیژن از بند یابد رها",
      "m2": "بفرمان دادار گیهان خدا",
      "verse_number": 22
    },
    {
      "id": "c5d3719f-6fcf-4ffa-a5c7-f653f8a1957b",
      "m1": "رهاگشتی از بند و رستی بجان",
      "m2": "ز تو دور شد کینهٔ بدگمان",
      "verse_number": 23
    },
    {
      "id": "1e008f16-6cff-4eb5-a11a-655add9bd626",
      "m1": "وگر جز برین روی گردد سپهر",
      "m2": "ز جان و تن خویش بردار مهر",
      "verse_number": 24
    },
    {
      "id": "923be121-74d6-468e-8120-dca1175ccc28",
      "m1": "نخستین من آیم بدین کینهخواه",
      "m2": "بنیروی یزدان و فرمان شاه",
      "verse_number": 25
    },
    {
      "id": "ca6de808-dc4d-438a-b463-9c52e556ddd2",
      "m1": "وگر من نیایم چو گودرز و گیو",
      "m2": "بخواهد ز تو کینهٔ پور نیو",
      "verse_number": 26
    },
    {
      "id": "0f1fa775-942f-4ebd-8c30-93c5e51ea211",
      "m1": "برآمد برین کار یک روز و شب",
      "m2": "و زین گفته بر شاه نگشاد لب",
      "verse_number": 27
    },
    {
      "id": "a09efbb6-0478-499e-bfc9-df28c3be162b",
      "m1": "دوم روز چون شاه بنمود تاج",
      "m2": "نشست از بر سیمگون تخت عاج",
      "verse_number": 28
    },
    {
      "id": "a4c48f1b-f008-4292-9232-a42d33e1ab14",
      "m1": "بیامد تهمتن بگسترد بر",
      "m2": "بخواهش بر شاه خورشید فر",
      "verse_number": 29
    },
    {
      "id": "d2795d92-35e2-47b8-ad00-a56595c14f69",
      "m1": "ز گرگین سخن گفت با شهریار",
      "m2": "ازان گم شده بخت و بد روزگار",
      "verse_number": 30
    },
    {
      "id": "721fc6b6-1ea1-444b-88a8-b562ec15012b",
      "m1": "بدو گفت شاه ای سپهدار من",
      "m2": "همی بگسلی بند و زنهار من",
      "verse_number": 31
    },
    {
      "id": "738a1e64-c862-4d62-9c6d-59ea2b35f6c0",
      "m1": "که سوگند خوردم بتخت و کلاه",
      "m2": "بدارای بهرام و خورشید و ماه",
      "verse_number": 32
    },
    {
      "id": "8fe89e2f-3d3e-415d-86f6-fce279ba9ec6",
      "m1": "که گرگین نبیند ز من جز بلا",
      "m2": "مگر بیژن از بند یابد رها",
      "verse_number": 33
    },
    {
      "id": "63ab56e1-4202-4d90-9ec7-45117f8d6c84",
      "m1": "جزین آرزو هرچ باید بخواه",
      "m2": "ز تخت و ز مهر و ز تیغ و کلاه",
      "verse_number": 34
    },
    {
      "id": "3d4b475f-cc35-4612-90cd-909df9d04bc0",
      "m1": "پس آنگه چنین گفت رستم بشاه",
      "m2": "که ای پرهنر نامور پیشگاه",
      "verse_number": 35
    },
    {
      "id": "ddbddc0b-468c-4938-823c-46dc9f28809c",
      "m1": "اگر بد سگالید پیچد همی",
      "m2": "فدا کردن جان بسیچد همی",
      "verse_number": 36
    },
    {
      "id": "eb1f692d-7af9-4fbc-91ca-b36b80cf165c",
      "m1": "گر آمرزش شاه نایدش پیش",
      "m2": "نبودیش نام و برآید ز کیش",
      "verse_number": 37
    },
    {
      "id": "d5c48393-1be6-4e5c-b9d2-3f7bc5d134d0",
      "m1": "هرآن کس که گردد ز راه خرد",
      "m2": "سرانجام پیچد ز کردار خود",
      "verse_number": 38
    },
    {
      "id": "6ac054fb-4147-4ffe-b3c7-ab8f0b959313",
      "m1": "سزد گر کنی یاد کردار اوی",
      "m2": "همیشه بهر کینه پیکار اوی",
      "verse_number": 39
    },
    {
      "id": "fd7201da-9807-432a-b2f7-fbaa94382452",
      "m1": "بپیش نیاکانت بسته کمر",
      "m2": "بهر کینه گه با یکی کینه ور",
      "verse_number": 40
    },
    {
      "id": "68ad4035-ff3a-422b-9682-df05e0b6b600",
      "m1": "اگر شاه بیند بمن بخشدش",
      "m2": "مگر اختر نیک بدرخشدش",
      "verse_number": 41
    },
    {
      "id": "2a427745-cbcd-416b-9b36-175707031262",
      "m1": "برستم ببخشید پیروز شاه",
      "m2": "رهانیدش از بند و تاریک چاه",
      "verse_number": 42
    },
    {
      "id": "5042e4d6-c571-41a5-bcf4-705770f27986",
      "m1": "ز رستم بپرسید پس شهریار",
      "m2": "که چون راند خواهی برین گونه کار",
      "verse_number": 43
    },
    {
      "id": "8a911192-5965-49c5-a429-44606941c754",
      "m1": "چه باید ز گنج و زلشکر بخواه",
      "m2": "که باید که با تو بیاید براه",
      "verse_number": 44
    },
    {
      "id": "3350cb20-65a2-46c8-bc82-5117571da1f6",
      "m1": "بترسم ز بد گوهر افراسیاب",
      "m2": "که بر جان بیژن بگیرد شتاب",
      "verse_number": 45
    },
    {
      "id": "0fb68900-16fc-4190-9e62-a845be1ed0ac",
      "m1": "یکی بادسارست دیو نژند",
      "m2": "بسی خوانده افسون و نیرنگ و بند",
      "verse_number": 46
    },
    {
      "id": "5f361abe-155b-4a49-93d2-f15447d0d3f0",
      "m1": "بجنباندش اهرمن دل ز جای",
      "m2": "بیندازد آن تیغ زن را زپای",
      "verse_number": 47
    },
    {
      "id": "022687d5-6473-41ef-b51e-c9d89daaad16",
      "m1": "چنین گفت رستم بشاه جهان",
      "m2": "که این کار ببسیچم اندر نهان",
      "verse_number": 48
    },
    {
      "id": "19386efb-5849-4141-a361-2699aa361160",
      "m1": "کلید چنین بند باشد فریب",
      "m2": "نباید برین کار کردن نهیب",
      "verse_number": 49
    },
    {
      "id": "f1665037-95e1-4b64-a9d7-bad3e38f3550",
      "m1": "نه هنگام گرزست و تیغ و سنان",
      "m2": "بدین کار باید کشیدن عنان",
      "verse_number": 50
    },
    {
      "id": "9e390c3c-2d59-42c4-874d-6670179824f8",
      "m1": "فراوان گهر باید و زرو سیم",
      "m2": "برفتن پر امید و بودن به بیم",
      "verse_number": 51
    },
    {
      "id": "4502fd5b-42c3-4773-80ec-545e7d00b514",
      "m1": "بکردار بازارگانان شدن",
      "m2": "شکیبا فراوان بتوران بدن",
      "verse_number": 52
    },
    {
      "id": "16ad888f-5792-4aa5-a734-d7b7a1047f8d",
      "m1": "ز گستردنی هم ز پوشیدنی",
      "m2": "بباید بهایی و بخشیدنی",
      "verse_number": 53
    },
    {
      "id": "af7c7f58-aeab-4f6a-ba31-c353d25f00c1",
      "m1": "چو بشنید خسرو ز رستم سخن",
      "m2": "بفرمود تا گنجهای کهن",
      "verse_number": 54
    },
    {
      "id": "1da920ea-79c5-4208-b5f7-18eac3af2ab2",
      "m1": "همه پاک بگشاد گنجور شاه",
      "m2": "بدینار و گوهر بیاراست گاه",
      "verse_number": 55
    },
    {
      "id": "766adc5a-edc5-41ad-a0d6-1c8f5c7063a1",
      "m1": "تهمتن بیامد همه بنگرید",
      "m2": "هر آنچش ببایست زان برگزید",
      "verse_number": 56
    },
    {
      "id": "5c178ada-7aa8-4ad6-a0a5-a28987e4fe5f",
      "m1": "ازان صد شتر بار دینار کرد",
      "m2": "صد اشتر ز گنج درم بار کرد",
      "verse_number": 57
    },
    {
      "id": "42d9b12a-db71-4aa6-b631-69d0aa0927e7",
      "m1": "بفرمود رستم بسالار بار",
      "m2": "که بگزین ز گردان لشکر هزار",
      "verse_number": 58
    },
    {
      "id": "9fc38983-e665-477d-98c3-a56d858edb69",
      "m1": "ز مردان گردنکش و نامور",
      "m2": "بباید تنی چند بسته کمر",
      "verse_number": 59
    },
    {
      "id": "8230ca8e-be3c-4065-b821-159225095189",
      "m1": "چو گرگین و چون زنگهٔ شاوران",
      "m2": "دگر گستهم شیر جنگ آوران",
      "verse_number": 60
    },
    {
      "id": "4d8126f4-619e-429d-9e72-f2d2465acf96",
      "m1": "چهارم گرازه که راند سپاه",
      "m2": "فروهل نگهبان تخت و کلاه",
      "verse_number": 61
    },
    {
      "id": "ea9b760b-4d3f-4e22-822d-e3cb49672e3d",
      "m1": "چو فرهاد و رهام گرد دلیر",
      "m2": "چو اشکش که صید آورد نره شیر",
      "verse_number": 62
    },
    {
      "id": "43ea306d-8e53-4e38-a710-86cb5cf5b18b",
      "m1": "چنین هفت یل باید آراسته",
      "m2": "نگهبان این لشکر و خواسته",
      "verse_number": 63
    },
    {
      "id": "aaf52bf2-ebc3-4752-bef8-634f138e3ff2",
      "m1": "همه تاج و زیور بینداختند",
      "m2": "چنانچون ببایست برساختند",
      "verse_number": 64
    },
    {
      "id": "b3c58c70-4076-447e-a7d3-9f88940e40c0",
      "m1": "پس آگاهی آمد بگردنکشان",
      "m2": "بدان گرزداران دشمن کشان",
      "verse_number": 65
    },
    {
      "id": "7adcefea-26ac-44d7-9b46-8f3aaa85c1f4",
      "m1": "بپرسید زنگه که خسرو کجاست",
      "m2": "چه آمد برویش که ما را بخواست",
      "verse_number": 66
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 66
  },
