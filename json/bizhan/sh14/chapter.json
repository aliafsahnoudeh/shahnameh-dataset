{
  "id": "67f10209-515b-47ef-911f-856b73ba3a2d",
  "title": "بخش ۱۴",
  "verses": [
    {
      "id": "94920c02-de54-4629-9107-7d18fdb30a07",
      "m1": "چو آگاهی آمد بشاه دلیر",
      "m2": "که از بیشه پیروز برگشت شیر",
      "verse_number": 1
    },
    {
      "id": "f07a91f1-87ad-49cf-96aa-c2c6abe86521",
      "m1": "چو بیژن شد از بند و زندان رها",
      "m2": "ز بند بداندیش نراژدها",
      "verse_number": 2
    },
    {
      "id": "2267754b-89c0-4999-8930-81efc52f2a26",
      "m1": "سپاهی ز توران بهم برشکست",
      "m2": "همه لشکر دشمنان کرد پست",
      "verse_number": 3
    },
    {
      "id": "10f7c0b7-c2bd-49c5-b43b-c2b5b350bcf7",
      "m1": "بشادی به پیش جهانآفرین",
      "m2": "بمالید روی و کله بر زمین",
      "verse_number": 4
    },
    {
      "id": "60d77abc-59fe-4cb1-b8bc-288a9e1cb13c",
      "m1": "چو گودرز و گیو آگهی یافتند",
      "m2": "سوی شاه پیروز بشتافتند",
      "verse_number": 5
    },
    {
      "id": "18570b54-07e9-419f-abb7-ba27241d3971",
      "m1": "برآمد خروش و بیامد سپاه",
      "m2": "تبیرهزنان برگرفتند راه",
      "verse_number": 6
    },
    {
      "id": "edcb9455-349d-467c-b267-f29f9dd4f092",
      "m1": "دمنده دمان گاودم بر درش",
      "m2": "برآمد خروشیدن از لشکرش",
      "verse_number": 7
    },
    {
      "id": "41437719-929f-43bc-a7e2-b15fa70a0e96",
      "m1": "سیه کرده میدانش اسبان بسم",
      "m2": "همه شهر آوای رویینهخم",
      "verse_number": 8
    },
    {
      "id": "631b79a3-4eb9-40eb-bc65-ec478ac8af74",
      "m1": "بیک دست بربسته شیر و پلنگ",
      "m2": "بزنجیر دیگر سواران جنگ",
      "verse_number": 9
    },
    {
      "id": "49b2b1ae-eebc-4054-9784-029f6b2ec052",
      "m1": "گرازان سواران دمان و دنان",
      "m2": "بدندان زمین ژنده پیلان کنان",
      "verse_number": 10
    },
    {
      "id": "7f81e842-f9cf-407f-972e-0112fe83047e",
      "m1": "بپیش سپاه اندرون بوق و کوس",
      "m2": "درفش از پس پشت گودرز و طوس",
      "verse_number": 11
    },
    {
      "id": "d614c79a-a3d8-4642-a4ae-b4ffbed53745",
      "m1": "پذیره شدن پیش پهلو سپاه",
      "m2": "بدین گونه فرمود بیدار شاه",
      "verse_number": 12
    },
    {
      "id": "b6895cdb-ec03-48ee-af14-c961f68a953b",
      "m1": "برفتند لشکر گروها گروه",
      "m2": "زمین شد ز گردان بکردار کوه",
      "verse_number": 13
    },
    {
      "id": "03e2c9ae-a69a-411c-aff6-6303b94eca57",
      "m1": "چو آمد پدیدار از انبوه نیو",
      "m2": "پیاده شد از باره گودرز و گیو",
      "verse_number": 14
    },
    {
      "id": "0e4b6f81-13f1-4c7f-9147-f168d5add197",
      "m1": "ز اسب اندرآمد جهان پهلوان",
      "m2": "بپرسیدش از رنجدیده گوان",
      "verse_number": 15
    },
    {
      "id": "4dba2b73-4636-4ae6-99ff-98ce532cce00",
      "m1": "برو آفرین کرد گودرز و گیو",
      "m2": "که ای نامبردار و سالار نیو",
      "verse_number": 16
    },
    {
      "id": "bef924e6-9ea6-461f-b5ef-b31620bfc510",
      "m1": "دلیر از تو گردد بهر جای شیر",
      "m2": "سپهر از تو هرگز مگرداد سیر",
      "verse_number": 17
    },
    {
      "id": "934e8c80-2564-4e84-832e-f09aee285770",
      "m1": "ترا جاودان باد یزدان پناه",
      "m2": "بکام تو گرداد خورشید و ماه",
      "verse_number": 18
    },
    {
      "id": "41dc3aa5-1533-46b3-8a0a-c3d675a5399b",
      "m1": "همه بنده کردی تو این دوده را",
      "m2": "زتو یافتم پور گمبوده را",
      "verse_number": 19
    },
    {
      "id": "5aedc431-d4cd-4c2a-85b7-c8dc159c38b5",
      "m1": "ز درد و غمان رستگان تویم",
      "m2": "بایران کمربستگان تویم",
      "verse_number": 20
    },
    {
      "id": "59cf5f06-48f3-47f9-9042-30e30db1fb7b",
      "m1": "بر اسبان نشستند یکسر مهان",
      "m2": "گرازان بنزدیک شاه جهان",
      "verse_number": 21
    },
    {
      "id": "44236df2-5470-4953-92dc-6e4d50d2c5bd",
      "m1": "چو نزدیک شهر جهاندار شاه",
      "m2": "فرازآمد آن گرد لشکرپناه",
      "verse_number": 22
    },
    {
      "id": "2a0f9ccc-4539-40c5-96ba-a436b993d2d3",
      "m1": "پذیره شدش نامدار جهان",
      "m2": "نگهدار ایران و شاه مهان",
      "verse_number": 23
    },
    {
      "id": "c4bb7da7-35d5-4380-ad08-991f3d6bd1b5",
      "m1": "چو رستم بفر جهاندار شاه",
      "m2": "نگه کرد کآمد پذیره براه",
      "verse_number": 24
    },
    {
      "id": "3699ecba-b8ee-43c8-8fd3-ef1d73767a58",
      "m1": "پیاده شد و برد پیشش نماز",
      "m2": "غمی گشته از رنج و راه دراز",
      "verse_number": 25
    },
    {
      "id": "d041bc0c-ea44-4956-86af-95f2c91e2b2f",
      "m1": "جهاندار خسرو گرفتش ببر",
      "m2": "که ای دست مردی و جان هنر",
      "verse_number": 26
    },
    {
      "id": "09691107-a958-48bd-9ff8-08f256cde547",
      "m1": "تهمتن سبک دست بیژن گرفت",
      "m2": "چنانکش ز شاه و پدر بپذرفت",
      "verse_number": 27
    },
    {
      "id": "3356a3f3-4ffc-47a1-b8c3-bbc131131ba5",
      "m1": "بیاورد و بسپرد و بر پای خاست",
      "m2": "چنان پشت خمیده را کرد راست",
      "verse_number": 28
    },
    {
      "id": "c53f299d-e8c9-404b-b637-50158607dad2",
      "m1": "ازان پس اسیران توران هزار",
      "m2": "بیاورد بسته بر شهریار",
      "verse_number": 29
    },
    {
      "id": "90d00333-e264-47a2-baad-0326b99db588",
      "m1": "برو آفرین کرد خسرو بمهر",
      "m2": "که جاوید بادا بکامت سپهر",
      "verse_number": 30
    },
    {
      "id": "6e26c04a-dac4-4cd7-bfaf-3b241169f861",
      "m1": "خنک زال کش بگذرد روزگار",
      "m2": "بماند بگیتی ترا یادگار",
      "verse_number": 31
    },
    {
      "id": "8b3016a3-1d3d-4a3c-9690-cfe81a36e317",
      "m1": "خجسته بر و بوم زابل که شیر",
      "m2": "همی پروراند گوان و دلیر",
      "verse_number": 32
    },
    {
      "id": "59ed2215-a668-40e2-8647-5ad5b56ef37e",
      "m1": "خنک شهر ایران و فرخ گوان",
      "m2": "که دارند چون تو یکی پهلوان",
      "verse_number": 33
    },
    {
      "id": "43342f98-998f-42d9-b6d4-e33e5f8fd774",
      "m1": "وزین هر سه برتر سر و بخت من",
      "m2": "که چون تو پرستد همی تخت من",
      "verse_number": 34
    },
    {
      "id": "57e5d35c-07ee-4adf-af01-f80b27a40eb1",
      "m1": "به خورشید ماند همی کار تو",
      "m2": "بگیتی پراگنده کردار تو",
      "verse_number": 35
    },
    {
      "id": "f4ecac99-45e7-4439-971d-0ee28cfe8a8f",
      "m1": "بگیو آنگهی گفت شاه جهان",
      "m2": "که نیکست با کردگارت نهان",
      "verse_number": 36
    },
    {
      "id": "63b3bdcf-0f34-4188-98e8-c83e7e0708b3",
      "m1": "که بر دست رستم جهانآفرین",
      "m2": "بتو داد پیروز پور گزین",
      "verse_number": 37
    },
    {
      "id": "ec9c5c1e-c302-45c5-baf8-661ecfc9b1fe",
      "m1": "گرفت آفرین گیو بر شهریار",
      "m2": "که شادان بدی تا بود روزگار",
      "verse_number": 38
    },
    {
      "id": "e98a0e07-a696-4fa0-965d-d910eac4d881",
      "m1": "سر رستمت جاودان سبز باد",
      "m2": "دل زال فرخ بدو باد شاد",
      "verse_number": 39
    },
    {
      "id": "f05a291c-c5ba-4165-8542-dc09238f09d4",
      "m1": "بفرمود خسرو که بنهید خوان",
      "m2": "بزرگان برترمنش را بخوان",
      "verse_number": 40
    },
    {
      "id": "48e5a3ec-6046-4f8c-acfb-e43d3c82b241",
      "m1": "چو از خوان سالار برخاستند",
      "m2": "نشستنگه می بیاراستند",
      "verse_number": 41
    },
    {
      "id": "45537de6-c76a-4bf0-b5af-e6312105b99b",
      "m1": "فروزندهٔ مجلس و میگسار",
      "m2": "نوازندهٔ چنگ با پیشکار",
      "verse_number": 42
    },
    {
      "id": "02e497f6-7a65-4996-a4fd-1caf38e21279",
      "m1": "همه بر سران افسران گران",
      "m2": "بزر اندرون پیکر از گوهران",
      "verse_number": 43
    },
    {
      "id": "381567ce-e11d-42a4-a926-d19c2896ccf7",
      "m1": "همه رخ چو دیبای رومی برنگ",
      "m2": "خروشان ز چنگ و پریزاده چنگ",
      "verse_number": 44
    },
    {
      "id": "7a9ce028-e58f-48df-93df-d297e7a0d0dd",
      "m1": "طبقهای سیمین پر از مشک ناب",
      "m2": "بپیش اندرون آبگیری گلاب",
      "verse_number": 45
    },
    {
      "id": "160c22cc-fb47-4b4b-b2b8-e6290151d92c",
      "m1": "همی تافت ازفر شاهنشهی",
      "m2": "چو ماه دو هفته ز سرو سهی",
      "verse_number": 46
    },
    {
      "id": "e6c618f5-d802-4ec7-88e0-1b3b61cff055",
      "m1": "همه پهلوانان خسروپرست",
      "m2": "برفتند زایوان سالار مست",
      "verse_number": 47
    },
    {
      "id": "fdeeecc7-4ad7-4abf-bdc0-7a1842e4b017",
      "m1": "بشبگیر چون رستم آمد بدر",
      "m2": "گشادهدل و تنگ بسته کمر",
      "verse_number": 48
    },
    {
      "id": "a6873636-94e5-4935-8a81-acdee451f7d1",
      "m1": "بدستوری بازگشتن بجای",
      "m2": "همی زد هشیوار با شاه رای",
      "verse_number": 49
    },
    {
      "id": "ac9f7bb3-d1a7-48d4-a1a4-0aebcd07c788",
      "m1": "یکی دست جامه بفرمود شاه",
      "m2": "گهر بافته با قبا و کلاه",
      "verse_number": 50
    },
    {
      "id": "78918cfb-5f9e-4723-82f0-f6ea5e79c0f4",
      "m1": "یکی جام پر گوهر شاهوار",
      "m2": "صد اسب و صد اشتر بزین و ببار",
      "verse_number": 51
    },
    {
      "id": "6ce95c5a-464c-4c6c-8e06-dd177bb9183f",
      "m1": "دو پنجه پریروی بسته کمر",
      "m2": "دو پنجه پرستار با طوق زر",
      "verse_number": 52
    },
    {
      "id": "ad49d211-2f24-4bad-b5c2-71d87601f180",
      "m1": "همه پیش شاه جهان کدخدای",
      "m2": "بیاورد و کردند یک سر بپای",
      "verse_number": 53
    },
    {
      "id": "90e97d78-5b9e-474f-ad20-0c79aa7df4a4",
      "m1": "همه رستم زابلی را سپرد",
      "m2": "زمین را ببوسید و برخاست گرد",
      "verse_number": 54
    },
    {
      "id": "d59421c0-e029-4f72-8be1-3cd251b24b69",
      "m1": "بسربر نهاد آن کلاه کیان",
      "m2": "ببست آن کیانی کمر برمیان",
      "verse_number": 55
    },
    {
      "id": "0ad72eb7-7d04-4049-961c-c531e027c7fc",
      "m1": "ابر شاه کرد آفرین و برفت",
      "m2": "ره سیستان را بسیچید تفت",
      "verse_number": 56
    },
    {
      "id": "6563b423-e675-493b-8584-e3aeef5deb8c",
      "m1": "بزرگان که بودند با او بهم",
      "m2": "برزم و ببزم و بشادی و غم",
      "verse_number": 57
    },
    {
      "id": "c2030b9c-ea80-439d-b0a8-2a3fa02fe848",
      "m1": "براندازهشان یک بیک هدیه داد",
      "m2": "از ایوان خسرو برفتند شاد",
      "verse_number": 58
    },
    {
      "id": "0fbda571-73b9-4a10-940f-505e03644f71",
      "m1": "چو از کار کردن بپردخت شاه",
      "m2": "برام بنشست بر پیشگاه",
      "verse_number": 59
    },
    {
      "id": "06631015-a201-4d5a-a801-7f8af41cac4b",
      "m1": "بفرمود تا بیژن آمدش پیش",
      "m2": "سخن گفت زان رنج و تیمار خویش",
      "verse_number": 60
    },
    {
      "id": "4584eb78-5e3e-45f8-8f5e-cd3a55356d6c",
      "m1": "ازان تنگ زندان و رنج زوار",
      "m2": "فراوان سخن گفت با شهریار",
      "verse_number": 61
    },
    {
      "id": "bca9892c-99b2-4929-8800-81d8368b6653",
      "m1": "وزان گردش روزگاران بد",
      "m2": "همه داستان پیش خسرو بزد",
      "verse_number": 62
    },
    {
      "id": "82f3c1d8-0ed3-4e26-bbd1-47fbc2d7ef0c",
      "m1": "بپیچید و بخشایش آورد سخت",
      "m2": "ز درد و غم دخت گم بوده بخت",
      "verse_number": 63
    },
    {
      "id": "7b0e1b39-f0b2-4e59-ac3c-3bfdd22717b7",
      "m1": "بفرمود صد جامه دیبای روم",
      "m2": "همه پیکرش گوهر و زر و بوم",
      "verse_number": 64
    },
    {
      "id": "d2e08aa8-3df1-4c12-94af-5346d791a5f3",
      "m1": "یکی تاج و ده بدره دینار نیز",
      "m2": "پرستنده و فرش و هرگونه چیز",
      "verse_number": 65
    },
    {
      "id": "658043ed-844c-45b2-83e2-c25174218a5f",
      "m1": "به بیژن بفرمود کاین خواسته",
      "m2": "ببر سوی ترک روانکاسته",
      "verse_number": 66
    },
    {
      "id": "8086f025-eac0-4415-bae1-d9654f0ee1f4",
      "m1": "برنجش مفرسا و سردش مگوی",
      "m2": "نگر تا چه آوردی او را بروی",
      "verse_number": 67
    },
    {
      "id": "33cc6126-0443-433f-8cbc-4a519abefc25",
      "m1": "تو با او جهان را بشادی گذار",
      "m2": "نگه کن بدین گردش روزگار",
      "verse_number": 68
    },
    {
      "id": "0f4aafad-927f-4d71-a766-ba7dd59006f6",
      "m1": "یکی را برآرد بچرخ بلند",
      "m2": "ز تیمار و دردش کند بیگزند",
      "verse_number": 69
    },
    {
      "id": "1183ef97-4cda-4697-bda5-d19b4146aea0",
      "m1": "وزانجاش گردان برد سوی خاک",
      "m2": "همه جای بیمست و تیمار و باک",
      "verse_number": 70
    },
    {
      "id": "c296e956-64fa-4b03-b9a1-2ca84b97ac9b",
      "m1": "هم آن را که پرورده باشد بناز",
      "m2": "بیفگند خیره بچاه نیاز",
      "verse_number": 71
    },
    {
      "id": "01589268-2b77-4b9a-b28a-da29b6b04ab7",
      "m1": "یکی را ز چاه آورد سوی گاه",
      "m2": "نهد بر سرش بر ز گوهر کلاه",
      "verse_number": 72
    },
    {
      "id": "27e32e85-9533-4d16-adfc-2cbe8e59e219",
      "m1": "جهان را ز کردار بد شرم نیست",
      "m2": "کسی را برش آب و آزرم نیست",
      "verse_number": 73
    },
    {
      "id": "3e61c923-32fc-4be0-b65d-18ff0d860e6a",
      "m1": "همیشه بهر نیک و بد دسترس",
      "m2": "ولیکن نجوید خود آزرم کس",
      "verse_number": 74
    },
    {
      "id": "3e434ec5-0f83-41b0-8f84-844738a3abf3",
      "m1": "چنینست کار سرای سپنج",
      "m2": "گهی ناز و نوش و گهی درد و رنج",
      "verse_number": 75
    },
    {
      "id": "875e3cc3-a31e-4429-bcb0-78555d82f43c",
      "m1": "ز بهر درم تا نباشی بدرد",
      "m2": "بیآزار بهتر دل رادمرد",
      "verse_number": 76
    },
    {
      "id": "f39b1ee6-dc7f-4a6f-b23e-daac14fae9ac",
      "m1": "بدین کار بیژن سخن ساختم",
      "m2": "بپیران و گودرز پرداختم",
      "verse_number": 77
