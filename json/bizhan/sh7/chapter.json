{
  "id": "0819fa7b-a9ac-4ae1-b90d-ec7ce3f20d2c",
  "title": "بخش ۷",
  "verses": [
    {
      "id": "3ce858c8-959f-4630-b5dd-e99f40f8d472",
      "m1": "چو آمد بر شاه کهترنواز",
      "m2": "نوان پیش او رفت و بردش نماز",
      "verse_number": 1
    },
    {
      "id": "8c069288-64df-48b0-8ba1-2987e3e4e086",
      "m1": "ستایش کنان پیش خسرو دوید",
      "m2": "که مهر و ستایش مر او را سزید",
      "verse_number": 2
    },
    {
      "id": "7bb2f9a5-7803-43be-b948-28274dd166a1",
      "m1": "برآورد سر آفرین کرد و گفت",
      "m2": "مبادت جز از بخت پیروز جفت",
      "verse_number": 3
    },
    {
      "id": "ed3ce969-bcd3-4a51-ada2-9a27767a1229",
      "m1": "چو هرمزد بادت بدین پایگاه",
      "m2": "چو بهمن نگهبان فرخ کلاه",
      "verse_number": 4
    },
    {
      "id": "bb7d83c1-3371-4800-897b-b5dfeed873a6",
      "m1": "همه ساله اردیبهشت هژیر",
      "m2": "نگهبان تو با هش و رای پیر",
      "verse_number": 5
    },
    {
      "id": "be7f88c8-1197-4490-8c56-403d98223c91",
      "m1": "چو شهریورت باد پیروزگر",
      "m2": "بنام بزرگی و فر و هنر",
      "verse_number": 6
    },
    {
      "id": "77abb047-8a3c-4c49-9f36-47623684e903",
      "m1": "سفندارمذ پاسبان تو باد",
      "m2": "خرد جان روشن روان تو باد",
      "verse_number": 7
    },
    {
      "id": "f7bc1b5d-9cb9-4309-8e81-02830e3699a6",
      "m1": "چو خردادت از یاوران بر دهاد",
      "m2": "ز مرداد باش از بر و بوم شاد",
      "verse_number": 8
    },
    {
      "id": "2c7e2589-8a75-49a5-903b-91e485f6bcde",
      "m1": "دی و اورمزدت خجسته بواد",
      "m2": "در هر بدی بر تو بسته بواد",
      "verse_number": 9
    },
    {
      "id": "530b6b0b-4aee-4ab0-8a13-bbf197622f20",
      "m1": "دیت آذر افروز و فرخنده روز",
      "m2": "تو شادان و تاج تو گیتی فروز",
      "verse_number": 10
    },
    {
      "id": "759b0f7a-9f2f-4930-a83a-3cdeae9f14c4",
      "m1": "چو این آفرین کرد رستم بپای",
      "m2": "بپرسید و کردش بر خویش جای",
      "verse_number": 11
    },
    {
      "id": "fe352616-7b5d-4a55-a458-cdde8534af7b",
      "m1": "بدو گفت خسرو درست آمدی",
      "m2": "که از جان تو دور بادا بدی",
      "verse_number": 12
    },
    {
      "id": "cb6e2889-c6fa-411b-b278-e924b67318cd",
      "m1": "توی پهلوان کیان جهان",
      "m2": "نهان آشکار آشکارت نهان",
      "verse_number": 13
    },
    {
      "id": "6ca38576-3cd5-4e02-a7a6-51197a815930",
      "m1": "گزین کیانی و پشت سپاه",
      "m2": "نگهدار ایران و لشکر پناه",
      "verse_number": 14
    },
    {
      "id": "0e0ca7f5-bb99-4abe-8305-a528d51c48fc",
      "m1": "مرا شاد کردی بدیدار خویش",
      "m2": "بدین پر هنر جان بیدار خویش",
      "verse_number": 15
    },
    {
      "id": "687a6057-38d3-4520-bea5-6789cfeff148",
      "m1": "زواره فرامرز و دستان سام",
      "m2": "درستند ازیشان چه داری پیام",
      "verse_number": 16
    },
    {
      "id": "1c1e1049-fd73-4fd4-b741-e59fc0417495",
      "m1": "فرو بود رستم ببوسید تخت",
      "m2": "که ای نامور خسرو نیکبخت",
      "verse_number": 17
    },
    {
      "id": "6b9478fe-fb55-41ed-8d94-d42f5d16e55e",
      "m1": "ببخت تو هر سه درستند و شاد",
      "m2": "انوشه کسی کش کند شاه یاد",
      "verse_number": 18
    },
    {
      "id": "c6334f3c-ae09-408d-982b-14f0fa9611b0",
      "m1": "بسالار نوبت بفرمود شاه",
      "m2": "که گودرز و طوس و گوان را بخواه",
      "verse_number": 19
    },
    {
      "id": "8109a796-29e4-414c-b266-2c4bc3f79fc7",
      "m1": "در باغ بگشاد سالار بار",
      "m2": "نشستنگهی بود بس شاهوار",
      "verse_number": 20
    },
    {
      "id": "c39ea935-cc5d-4f83-a04f-45ed1ee83e69",
      "m1": "بفرمود تا تاج زرین و تخت",
      "m2": "نهادند زیر گلفشان درخت",
      "verse_number": 21
    },
    {
      "id": "38c135d1-a3ae-40d7-a3c3-92b923a6d755",
      "m1": "همه دیبهٔ خسروانی بباغ",
      "m2": "بگسترد و شد گلستان چون چراغ",
      "verse_number": 22
    },
    {
      "id": "2c4a9791-675e-4cda-8806-41983bd416b0",
      "m1": "درختی زدند از بر گاه شاه",
      "m2": "کجا سایه گسترد بر تاج و گاه",
      "verse_number": 23
    },
    {
      "id": "b8ada120-ed00-4b7c-acf2-55ac10b33864",
      "m1": "تنش سیم و شاخش ز یاقوت و زر",
      "m2": "برو گونهگون خوشههای گهر",
      "verse_number": 24
    },
    {
      "id": "5e6e3604-063b-4677-bbc1-ee3f0e943cc6",
      "m1": "عقیق و زمرد همه برگ و بار",
      "m2": "فروهشته از تاج چون گوشوار",
      "verse_number": 25
    },
    {
      "id": "ee6f50bd-c327-484d-b0fc-8c7672995f61",
      "m1": "همه بار زرین ترنج و بهی",
      "m2": "میان ترنج و بهیها تهی",
      "verse_number": 26
    },
    {
      "id": "38976a2a-ae17-454b-9f99-00ba3dcb2374",
      "m1": "بدو اندرون مشک سوده بمی",
      "m2": "همه پیکرش سفته برسان نی",
      "verse_number": 27
    },
    {
      "id": "54d94972-5995-4012-9c90-9bb2a4127cfc",
      "m1": "کرا شاه بر گاه بنشاندی",
      "m2": "برو باد ازو مشک بفشاندی",
      "verse_number": 28
    },
    {
      "id": "c0aead95-bc26-4b9a-962b-69137239a540",
      "m1": "همه میگساران بیپش اندرا",
      "m2": "همه بر سران افسر از گوهرا",
      "verse_number": 29
    },
    {
      "id": "d9b5e50a-768a-4e44-9328-ce8cff3395cf",
      "m1": "ز دیبای زربفت چینی قبای",
      "m2": "همه پیش گاه سپهبد بپای",
      "verse_number": 30
    },
    {
      "id": "267db71b-d837-48ae-9f10-6d63ceb09b8d",
      "m1": "همه طوق بربسته و گوشوار",
      "m2": "بریشان همه جامه گوهرنگار",
      "verse_number": 31
    },
    {
      "id": "8821d1e5-e8c5-48fb-bbd7-bbf8c24c4057",
      "m1": "همه رخ چو دیبای رومی برنگ",
      "m2": "فروزنده عود و خروشنده چنگ",
      "verse_number": 32
    },
    {
      "id": "688b28b0-dacf-4d8d-84ff-cec7e8a1681a",
      "m1": "همه دل پر از شادی و می بدست",
      "m2": "رخان ارغوانی و نابوده مست",
      "verse_number": 33
    },
    {
      "id": "31085399-091f-46fc-8311-0988ec512e3b",
      "m1": "بفرمود تا رستم آمد بتخت",
      "m2": "نشست از بر گاه زیر درخت",
      "verse_number": 34
    },
    {
      "id": "42249408-9923-4e41-8096-675631462879",
      "m1": "برستم چنین گفت پس شهریار",
      "m2": "که ای نیک پیوند و به روزگار",
      "verse_number": 35
    },
    {
      "id": "013387a7-3128-458a-a761-0241d6569c8c",
      "m1": "ز هر بد توی پیش ایران سپر",
      "m2": "همیشه چو سیمرغ گسترده پر",
      "verse_number": 36
    },
    {
      "id": "e9d1e195-7e50-4394-b6e1-99815b3cde87",
      "m1": "چه درگاه ایران چه پیش کیان",
      "m2": "همه بر در رنج بندی میان",
      "verse_number": 37
    },
    {
      "id": "4f8d0618-6c2a-4fc1-80cc-95634c5b2bee",
      "m1": "شناسی تو کردار گودرزیان",
      "m2": "به آسانی و رنج و سود و زیان",
      "verse_number": 38
    },
    {
      "id": "0a22d6dc-b779-435d-aa01-eaf2f439b58e",
      "m1": "میان بسته دارند پیشم بپای",
      "m2": "همیشه بنیکی مرا رهنمای",
      "verse_number": 39
    },
    {
      "id": "2cbf1f53-004e-4e1b-8ec4-e5118a455c64",
      "m1": "بتنها تن گیو کز انجمن",
      "m2": "ز هر بد سپر بود در پیش من",
      "verse_number": 40
    },
    {
      "id": "115c00a1-b074-42d7-827e-aacdd9212fb1",
      "m1": "چنین غم بدین دوده نامد بنیز",
      "m2": "غم و درد فرزند برتر ز چیز",
      "verse_number": 41
    },
    {
      "id": "b8d9ae28-75b8-44c6-b52a-de7cbb859d36",
      "m1": "بدین کار گر تو ببندی میان",
      "m2": "پذیره نیایدت شیر ژیان",
      "verse_number": 42
    },
    {
      "id": "8592f014-2e9f-4c8d-9ac0-9705b51cd6b6",
      "m1": "کنون چارهٔ کار بیژن بجوی",
      "m2": "که او را ز توران بد آمد بروی",
      "verse_number": 43
    },
    {
      "id": "9ec6b058-ac55-4487-a567-e8666073a991",
      "m1": "ز گردان و اسبان و شمشیر و گنج",
      "m2": "ببر هرچ باید مدار این برنج",
      "verse_number": 44
    },
    {
      "id": "4fd8c097-210c-43a0-8bc7-9696aa870f31",
      "m1": "چو رستم ز کیخسرو ایدون شنید",
      "m2": "زمین را ببوسید و دم درکشید",
      "verse_number": 45
    },
    {
      "id": "2321bc67-f142-48ff-bc8e-576fe148c361",
      "m1": "برو آفرین کرد کای نیک نام",
      "m2": "چو خورشید هر جای گسترده کام",
      "verse_number": 46
    },
    {
      "id": "9e59e7a0-085b-40c2-84b6-cde033ce809d",
      "m1": "ز تو دور بادا دو چشم نیاز",
      "m2": "دل بدسگالت بگرم و گداز",
      "verse_number": 47
    },
    {
      "id": "a3d6a3a8-ed19-4221-9e07-e37238d9b8f0",
      "m1": "توی بر جهان شاه و سالار و کی",
      "m2": "کیان جهان مر ترا خاک پی",
      "verse_number": 48
    },
    {
      "id": "67f9f850-3179-49df-a905-93eda10b3f79",
      "m1": "که چون تو ندیدست یک شاه گاه",
      "m2": "نه تابنده خروشید و گردنده ماه",
      "verse_number": 49
    },
    {
      "id": "36f16a0f-babe-4df2-914f-420b69c60531",
      "m1": "بدان را ز نیکان تو کردی جدا",
      "m2": "تو داری بافسون و بند اژدها",
      "verse_number": 50
    },
    {
      "id": "5a65354c-5d66-4ce8-a32b-a248561232b1",
      "m1": "بکندم دل دیو مازندران",
      "m2": "بفر کیانی و گرز گران",
      "verse_number": 51
    },
    {
      "id": "c786b224-7c77-469d-990c-18a50db6f620",
      "m1": "مرامادر از بهر رنج تو زاد",
      "m2": "تو باید که باشی بآرام و شاد",
      "verse_number": 52
    },
    {
      "id": "dc7f615f-92d3-4b1a-87b6-b1bd77f21bfd",
      "m1": "منم گوش داده بفرمان تو",
      "m2": "نگردم بهرسان ز پیمان تو",
      "verse_number": 53
    },
    {
      "id": "f4d52965-7148-4538-b815-06d13422ae25",
      "m1": "دل و جان نهاده بسوی کلاه",
      "m2": "بران ره روم کم بفرمود شاه",
      "verse_number": 54
    },
    {
      "id": "3c3feae8-4ccc-41df-9359-f6f42f057752",
      "m1": "و نیز از پی گیو اگر بر سرم",
      "m2": "هوا بارد آتش بدو ننگرم",
      "verse_number": 55
    },
    {
      "id": "af0cbf1e-787a-4b86-be8f-9cf04e6683a4",
      "m1": "رسیده بمژگانم اندر سنان",
      "m2": "ز فرمان خسرو نتابم عنان",
      "verse_number": 56
    },
    {
      "id": "cbe0b9fb-912c-4e8e-b28c-e7e7bf959dce",
      "m1": "برآرم ببخت تو این کار کرد",
      "m2": "سپهبد نخواهم نه مردان مرد",
      "verse_number": 57
    },
    {
      "id": "36267ad2-cefc-406a-a1e0-9da05d93d234",
      "m1": "کلید چنین بند باشد فریب",
      "m2": "نه هنگام گرزست و روز نهیب",
      "verse_number": 58
    },
    {
      "id": "14f4fd2a-d392-4540-84f5-5178bd5b4986",
      "m1": "چو رستم چنین گفت گودرز و گیو",
      "m2": "فریبرز و فرهاد و شاپور نیو",
      "verse_number": 59
    },
    {
      "id": "59716b41-cf63-4097-9c76-2790d3ec7e94",
      "m1": "بزرگان لشکر برو آفرین",
      "m2": "همی خواندند از جهان آفرین",
      "verse_number": 60
    },
    {
      "id": "458bc9af-ad0d-4a00-affd-c3b51d388892",
      "m1": "بمی دست بردند با شهریار",
      "m2": "گشاده بشادی در نوبهار",
      "verse_number": 61
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 61
  },
