{
  "id": "62c5f187-cb66-45c8-9075-efc77ddc903f",
  "title": "بخش ۴",
  "verses": [
    {
      "id": "eb5f77b8-5a79-4836-b12f-5624dffab631",
      "m1": "ببخشود یزدان جوانیش را",
      "m2": "بهم برشکست آن گمانیش را",
      "verse_number": 1
    },
    {
      "id": "0671ddf5-c758-4244-914e-bf4cbbd56474",
      "m1": "کننده همی کند جای درخت",
      "m2": "پدید آمد از دور پیران ز بخت",
      "verse_number": 2
    },
    {
      "id": "e7baa1f2-3824-4499-9e92-99bc40bafd70",
      "m1": "چو پیران ویسه بدانجا رسید",
      "m2": "همه راه ترک کمربسته دید",
      "verse_number": 3
    },
    {
      "id": "85783f16-34bd-4f44-90d1-c8499a59e4a1",
      "m1": "یکی دار برپای کرده بلند",
      "m2": "کمندی برو بسته چون پای بند",
      "verse_number": 4
    },
    {
      "id": "0f6dd066-3a1c-4896-b9c7-25973b95a342",
      "m1": "ز ترکان بپرسید کین دار چیست",
      "m2": "در شاه را از در دار کیست",
      "verse_number": 5
    },
    {
      "id": "de83e4ac-29d4-428d-9778-763285262a0d",
      "m1": "بدو گفت گرسیوز این بیژنست",
      "m2": "از ایران کجا شاه را دشمنست",
      "verse_number": 6
    },
    {
      "id": "35189f9c-f06c-45db-854f-befa62781c75",
      "m1": "بزد اسب و آمد بر بیژنا",
      "m2": "جگر خسته دیدش برهنه تنا",
      "verse_number": 7
    },
    {
      "id": "bc61e462-b3fe-4338-9df2-5cc88c4a58a6",
      "m1": "دو دست از پس پشت بسته چو سنگ",
      "m2": "دهن خشک و رفته ز رخساره رنگ",
      "verse_number": 8
    },
    {
      "id": "64bbfe4b-073f-4b1a-b41a-4638250f860a",
      "m1": "بپرسید و گفتش که چون آمدی",
      "m2": "از ایران همانا بخون آمدی",
      "verse_number": 9
    },
    {
      "id": "76cc3354-80fc-4606-9033-a8981a85959c",
      "m1": "همه داستان بیژن او را بگفت",
      "m2": "چنانچون رسیدش ز بدخواه جفت",
      "verse_number": 10
    },
    {
      "id": "f2dda386-9cd5-4a06-87f0-1bd89b52051a",
      "m1": "ببخشود پیران ویسه بروی",
      "m2": "ز مژگان سرشکش فرو شد بروی",
      "verse_number": 11
    },
    {
      "id": "893f3c27-843b-46f1-98dc-b5e698801247",
      "m1": "بفرمود تا یک زمانش بدار",
      "m2": "نکردند و گفتا هم ایدر بدار",
      "verse_number": 12
    },
    {
      "id": "93dc251c-1b01-436d-8cec-b31d8f449ef0",
      "m1": "بدان تا ببینم یکی روی شاه",
      "m2": "نمایم بدو اختر نیک راه",
      "verse_number": 13
    },
    {
      "id": "f68dd60a-2056-4f7a-a7b3-d4d6f8153622",
      "m1": "بکاخ اندر آمد پرستارفش",
      "m2": "بر شاه با دست کرده بکش",
      "verse_number": 14
    },
    {
      "id": "91215c8a-7d1c-4ada-be17-191b21663e25",
      "m1": "بیامد دمان تا بنزدیک تخت",
      "m2": "بر افراسیاب آفرین کرد سخت",
      "verse_number": 15
    },
    {
      "id": "5cf3aa41-2a74-4a96-8eae-b8a3e37cfb6e",
      "m1": "همی بود در پیش تختش بپای",
      "m2": "چو دستور پاکیزه و رهنمای",
      "verse_number": 16
    },
    {
      "id": "02a9fe3d-06fa-4866-a974-c9d7c859a11a",
      "m1": "سپهبد بدانست کز آرزوی",
      "m2": "بپایست پیران آزاده خوی",
      "verse_number": 17
    },
    {
      "id": "5c2458eb-e110-446f-9522-a663099a8426",
      "m1": "بخندید و گفتش چه خواهی بگوی",
      "m2": "ترا بیشتر نزد من آبروی",
      "verse_number": 18
    },
    {
      "id": "2b408956-5695-4054-819b-375e09cb36f3",
      "m1": "اگر زر خواهی و گر گوهرا",
      "m2": "و گر پادشاهی هر کشورا",
      "verse_number": 19
    },
    {
      "id": "ad0ef9ea-3c85-4013-83d6-6c1c50b6c5db",
      "m1": "ندارم دریغ از تو من گنج خویش",
      "m2": "چرا برگزینی همی رنج خویش",
      "verse_number": 20
    },
    {
      "id": "dc8144e0-f32c-491a-b080-dad0453d9de0",
      "m1": "چو بشنید پیران خسرو پرست",
      "m2": "زمین را ببوسید و بر پای جست",
      "verse_number": 21
    },
    {
      "id": "215b0f9e-a79c-4fd8-b26c-29cf91687059",
      "m1": "که جاوید بادا ترا بخت و جای",
      "m2": "مبادا ز تخت تو پردخته جای",
      "verse_number": 22
    },
    {
      "id": "2d462791-120f-42d3-ba07-66cb8a04131d",
      "m1": "ز شاهان گیتی ستایش تراست",
      "m2": "ز خورشید برتر نمایش تراست",
      "verse_number": 23
    },
    {
      "id": "141a7096-4585-47ca-bd5e-8eda90c5729b",
      "m1": "مرا هرچ باید ببخت تو هست",
      "m2": "ز مردان وز گنج و نیروی دست",
      "verse_number": 24
    },
    {
      "id": "cf4151b5-46aa-44ac-943d-04e976e8a5b6",
      "m1": "مرا این نیاز از در خویش نیست",
      "m2": "کس از کهتران تو درویش نیست",
      "verse_number": 25
    },
    {
      "id": "88498cef-2189-47f4-b551-0d9be7810a56",
      "m1": "بداند شهنشاه برترمنش",
      "m2": "ستوده بهر کار بیسرزنش",
      "verse_number": 26
    },
    {
      "id": "5c1bca86-8690-459a-9625-20b0268d0bf5",
      "m1": "که من شاه را پیش ازین چند بار",
      "m2": "همی دادمی پند بر چند کار",
      "verse_number": 27
    },
    {
      "id": "2c229994-16ac-4df0-b742-26db29f3d869",
      "m1": "بفرمان من هیچ نامد فراز",
      "m2": "ازو داشتم کارها دست باز",
      "verse_number": 28
    },
    {
      "id": "dcb90be5-5692-4f01-b1fd-a04fcb485126",
      "m1": "مکش گفتمت پور کاوس را",
      "m2": "که دشمن کنی رستم و طوس را",
      "verse_number": 29
    },
    {
      "id": "ee833987-3e5f-4fdf-9424-91e4864a9cda",
      "m1": "کز ایران بپیلان بکوبندمان",
      "m2": "ز هم بگسلانند پیوندمان",
      "verse_number": 30
    },
    {
      "id": "d07dcb78-e939-4558-a63d-3cd14327cb27",
      "m1": "سیاوش که بود از نژاد کیان",
      "m2": "ز بهر تو بسته کمر بر میان",
      "verse_number": 31
    },
    {
      "id": "a65a3d36-e648-45b5-9d64-f5622dce8c77",
      "m1": "بکشتی بخیره سیاوش را",
      "m2": "بزهر اندر آمیختی نوش را",
      "verse_number": 32
    },
    {
      "id": "efae5070-9ac2-4688-a35c-da14b6fb5bc8",
      "m1": "بدیدی بدیهای ایرانیان",
      "m2": "که کردند با شهر تورانیان",
      "verse_number": 33
    },
    {
      "id": "bbdddad6-1276-42da-883c-10a5a5177839",
      "m1": "ز ترکان دو بهره بپای ستور",
      "m2": "سپردند و شد بخت را آب شور",
      "verse_number": 34
    },
    {
      "id": "5e211cc1-c2d8-4ff7-b20d-aa8bbcc314f2",
      "m1": "هنوز آن سر تیغ دستان سام",
      "m2": "همانا نیاسود اندر نیام",
      "verse_number": 35
    },
    {
      "id": "cde5f819-9e36-4dc8-8ba5-2a87499f18b2",
      "m1": "که رستم همی سرفشاند ازوی",
      "m2": "بخورشید بر خون چکاند ازوی",
      "verse_number": 36
    },
    {
      "id": "69576cf6-bf9b-42f3-8068-5f08f64eaa66",
      "m1": "بآرام بر کینه جویی همی",
      "m2": "گل زهر خیره ببویی همی",
      "verse_number": 37
    },
    {
      "id": "bab368c1-c009-427d-989b-bb9d70ada2d9",
      "m1": "اگر خون بیژن بریزی برین",
      "m2": "ز توران برآید همان گرد کین",
      "verse_number": 38
    },
    {
      "id": "e9eaefd7-c6fb-410e-9663-5b080a0f3ba0",
      "m1": "خردمند شاهی و ما کهترا",
      "m2": "تو چشم خرد باز کن بنگرا",
      "verse_number": 39
    },
    {
      "id": "5710e040-ecac-4e21-99ca-d04465105d42",
      "m1": "نگه کن ازان کین که گستردیا",
      "m2": "ابا شاه ایران چه بر خوردیا",
      "verse_number": 40
    },
    {
      "id": "a1431729-3920-4349-bf52-39ac9e29bf67",
      "m1": "هم آنرا همی خواستار آوری",
      "m2": "درخت بلا را ببار آوری",
      "verse_number": 41
    },
    {
      "id": "e56c7716-a17a-422e-9de8-30d3f2abc4a0",
      "m1": "چو کینه دو گردد نداریم پای",
      "m2": "ایا پهلوان جهان کدخدای",
      "verse_number": 42
    },
    {
      "id": "08d1f4a6-4c5c-46bd-bd1a-a88842f64042",
      "m1": "به از تو نداند کسی گیو را",
      "m2": "نهنگ بلا رستم نیو را",
      "verse_number": 43
    },
    {
      "id": "0052bff8-b5f0-4d48-9555-f81b24363127",
      "m1": "چو گودرز کشواد پولادچنگ",
      "m2": "که آید ز بهر نبیره بجنگ",
      "verse_number": 44
    },
    {
      "id": "63fc68d7-560c-4f01-867c-8410ff38b5dc",
      "m1": "چو برزد بران آتش تیز آب",
      "m2": "چنین داد پاسخ پس افراسیاب",
      "verse_number": 45
    },
    {
      "id": "0c807d0a-3b5a-4ebf-86ce-d63df2f0c25c",
      "m1": "که بیژن نبینی که با من چه کرد",
      "m2": "بایران و توران شدم روی زرد",
      "verse_number": 46
    },
    {
      "id": "0a30ce6a-4723-4a0a-8648-86b4e43501cf",
      "m1": "نبینی کزین بدهنر دخترم",
      "m2": "چه رسوایی آمد بپیران سرم",
      "verse_number": 47
    },
    {
      "id": "4858d5a0-efb3-4c43-84ed-f9586a9e4c25",
      "m1": "همان نام پوشیده رویان من",
      "m2": "ز پرده بگسترد بر انجمن",
      "verse_number": 48
    },
    {
      "id": "748fab4d-0bff-4cf7-9534-cf658fc42aa3",
      "m1": "کزین ننگ تا جاودان بر سرم",
      "m2": "بخندد همی کشور و لشکرم",
      "verse_number": 49
    },
    {
      "id": "500b7596-4bc6-4633-b27c-4f54d48fd047",
      "m1": "چنو یابد از من رهایی بجان",
      "m2": "گشایند بر من ز هر سو زبان",
      "verse_number": 50
    },
    {
      "id": "992ad365-3d65-4cf9-80f3-bd71f987176c",
      "m1": "برسوایی اندر بمانم بدرد",
      "m2": "بپالایم از دیدگان آب زرد",
      "verse_number": 51
    },
    {
      "id": "ddbb2ed7-a8a7-48ac-b581-47756734c7ed",
      "m1": "دگر آفرین کرد پیران بدوی",
      "m2": "که ای شاه نیک اختر راستگوی",
      "verse_number": 52
    },
    {
      "id": "5fc9ed4c-9a8f-4dc7-9337-f25e74c6fe65",
      "m1": "چنینست کین شاه گوید همی",
      "m2": "جز از نیک نامی نجوید همی",
      "verse_number": 53
    },
    {
      "id": "f205b57f-ce02-495b-ae59-d22d9898051a",
      "m1": "ولیکن بدین رای هشیار من",
      "m2": "یکی بنگرد ژرف سالار من",
      "verse_number": 54
    },
    {
      "id": "efa84236-eb5f-40f3-91c4-404d0e12a221",
      "m1": "ببندد مر او را ببند گران",
      "m2": "کجا دار و کشتن گزیند بران",
      "verse_number": 55
    },
    {
      "id": "33d5d170-545c-488b-8e1b-f957913b9955",
      "m1": "هر آنکو بزندان تو بسته ماند",
      "m2": "ز دیوانها نام او کس نخواند",
      "verse_number": 56
    },
    {
      "id": "8a124019-b8ae-406e-be1b-96337300f3a4",
      "m1": "ازو پند گیرند ایرانیان",
      "m2": "نبندند ازین پس بدی را میان",
      "verse_number": 57
    },
    {
      "id": "709e786e-cf09-4d29-a594-0fcc840dfefe",
      "m1": "چنان کرد سالار کو رای دید",
      "m2": "دلش با زبان شاه بر جای دید",
      "verse_number": 58
    },
    {
      "id": "a2edeb6c-153d-4894-aafe-75db9fa1a8c4",
      "m1": "ز دستور پاکیزهٔ راهبر",
      "m2": "درفشان شود شاه بر گاه بر",
      "verse_number": 59
    },
    {
      "id": "e4d8486a-2b35-44c6-afe5-d15488083769",
      "m1": "بگرسیوز آنگه بفرمود شاه",
      "m2": "که بند گران ساز و تاریک چاه",
      "verse_number": 60
    },
    {
      "id": "5ab09832-6692-4725-9f59-e7b8f25e6ebf",
      "m1": "دو دستش بزنجیر و گردن بغل",
      "m2": "یکی بند رومی بکردار مل",
      "verse_number": 61
    },
    {
      "id": "26af6a08-5bd6-4489-bcc1-38f287fc13f4",
      "m1": "ببندش به مسمار آهنگران",
      "m2": "ز سر تا بپایش ببند اندران",
      "verse_number": 62
    },
    {
      "id": "28024395-1e29-48da-b621-c64ced298fde",
      "m1": "چو بستی نگون اندر افگن بچاه",
      "m2": "چو بیبهره گردد ز خورشید و ماه",
      "verse_number": 63
    },
    {
      "id": "7f20815f-f705-4322-8b27-ee844620c241",
      "m1": "ببر پیل و آن سنگ اکوان دیو",
      "m2": "که از ژرف دریای گیهان خدیو",
      "verse_number": 64
    },
    {
      "id": "1c2bcd85-26ac-46de-aa1a-fcc6a9cd9498",
      "m1": "فگندست در بیشهٔ چین ستان",
      "m2": "بیاور ز بیژن بدان کین ستان",
      "verse_number": 65
    },
    {
      "id": "0e689a8e-c448-4c79-bfdc-d88b4b28661e",
      "m1": "بپیلان گردون کش آن سنگ را",
      "m2": "که پوشد سر چاه ارژنگ را",
      "verse_number": 66
    },
    {
      "id": "bd4f1ab3-e545-4598-8bbc-d42c86513046",
      "m1": "بیاور سر چاه او را بپوش",
      "m2": "بدان تا بزاری برآیدش هوش",
      "verse_number": 67
    },
    {
      "id": "aa0cc92b-d2ae-44b4-b200-08b1f49907e9",
      "m1": "وز آنجا بایوان آن بیهنر",
      "m2": "منیژه کزو ننگ یابد گهر",
      "verse_number": 68
    },
    {
      "id": "de858733-63b7-4faa-a288-5aa7050e0a05",
      "m1": "برو با سواران و تاراج کن",
      "m2": "نگونبخت را بی سر و تاج کن",
      "verse_number": 69
    },
    {
      "id": "7bc7681c-54ce-48f8-945a-e577928ad829",
      "m1": "بگو ای بنفرین شوریده بخت",
      "m2": "که بر تو نزیبد همی تاج و تخت",
      "verse_number": 70
    },
    {
      "id": "0901f2c2-d11d-4f59-9bd8-5e6cad107d55",
      "m1": "به ننگ از کیان پست کردی سرم",
      "m2": "بخاک اندر انداختی افسرم",
      "verse_number": 71
    },
    {
      "id": "6a076950-9fd6-4c5e-9821-e166a1ba9cc7",
      "m1": "برهنه کشانش ببر تا بچاه",
      "m2": "که در چاه بین آنک دیدی بگاه",
      "verse_number": 72
    },
    {
      "id": "829d4d2f-2e19-4135-80fc-df8ae7c8efe0",
      "m1": "بهارش توی غمگسارش توی",
      "m2": "درین تنگ زندان زوارش توی",
      "verse_number": 73
    },
    {
      "id": "4a94dd0e-06eb-478c-85c3-e872aba9c630",
      "m1": "خرامید گرسیوز از پیش اوی",
      "m2": "بکردند کام بداندیش اوی",
      "verse_number": 74
    },
    {
      "id": "c1a7d3c9-7816-499e-862d-08cb12595a61",
      "m1": "کشان بیژن گیو از پیش دار",
      "m2": "ببردند بسته بران چاهسار",
      "verse_number": 75
    },
    {
      "id": "75904e31-3e00-445c-b14d-10c994b95d0a",
      "m1": "ز سر تا به پایش به آهن ببست",
      "m2": "بر و بازوی و گردن و پای و دست",
      "verse_number": 76
    },
    {
      "id": "6cd07d72-00db-43b0-be56-4b72fd6dbd76",
      "m1": "بپولاد خایسک آهنگران",
      "m2": "فروبرد مسمارهای گران",
      "verse_number": 77
    },
    {
      "id": "b27ebacf-3e48-4923-ad08-0e008a67b151",
      "m1": "نگونش بچاه اندر انداختند",
      "m2": "سر چاه را بند بر ساختند",
      "verse_number": 78
    },
    {
      "id": "a1f95e6c-c1cd-481d-bad9-2ea2197db3d8",
      "m1": "وز آنجا بایوان آن دخترش",
      "m2": "بیاورد گرسیوز آن لشکرش",
      "verse_number": 79
    },
    {
      "id": "6214be92-ee2b-4237-acb9-5d1d016b8709",
      "m1": "همه گنج و گوهر بتاراج داد",
      "m2": "ازین بدره بستد بدان تاج داد",
      "verse_number": 80
    },
    {
      "id": "b1e33e06-2d57-477b-8315-564bafedf1b8",
      "m1": "منیژه برهنه بیک چادرا",
      "m2": "برهنه دو پای و گشاده سرا",
      "verse_number": 81
    },
    {
      "id": "f4199f4d-05a5-4c67-a550-ad44fa1a44f2",
      "m1": "کشیدش دوان تا بدان چاهسار",
      "m2": "دو دیده پر از خون و رخ جویبار",
      "verse_number": 82
    },
    {
      "id": "60bfd0c6-cb59-4799-9aeb-a25fe126f1f7",
      "m1": "بدو گفت اینک ترا خان و مان",
      "m2": "زواری برین بسته تا جاودان",
      "verse_number": 83
    },
    {
      "id": "8926e798-f0a4-4e3a-8e24-a321f494b19d",
      "m1": "غریوان همی گشت بر گرد دشت",
      "m2": "چو یک روز و یک شب برو بر گذشت",
      "verse_number": 84
    },
    {
      "id": "ce8f1bfe-d239-489c-9291-0a8cfd19ee77",
      "m1": "خروشان بیامد بنزدیک چاه",
      "m2": "یکی دست را اندرو کرد راه",
      "verse_number": 85
    },
    {
      "id": "4b394225-c2ae-4d7e-ba8b-1c643928af6e",
      "m1": "چو از کوه خورشید سر برزدی",
      "m2": "منیژه ز هر در همی نان چدی",
      "verse_number": 86
    },
    {
      "id": "32af7a2a-add2-4d8f-86ee-0d4d47647f5a",
      "m1": "همی گرد کردی بروز دراز",
      "m2": "بسوراخ چاه آوریدی فراز",
      "verse_number": 87
    },
    {
      "id": "ff7c556f-c568-4d79-b154-330e755ae1cf",
      "m1": "ببیژن سپردی و بگریستی",
      "m2": "بران شوربختی همی زیستی",
      "verse_number": 88
    }
  ],
