{
  "id": "67f7e4ec-0982-4eb3-867c-49e30f4fe27a",
  "title": "بخش ۱۳",
  "verses": [
    {
      "id": "68b8679b-c66f-4088-8e07-5693a8bdb506",
      "m1": "چو خورشید سر برزد از کوهسار",
      "m2": "سواران توران ببستند بار",
      "verse_number": 1
    },
    {
      "id": "43be42a7-c38b-4fc5-9622-277a1e5a4867",
      "m1": "بتوفید شهر و برآمد خروش",
      "m2": "تو گفتی همی کر کند نعره گوش",
      "verse_number": 2
    },
    {
      "id": "85ce2617-b076-4a3e-ae18-048a99bda235",
      "m1": "بدرگاه افراسیاب آمدند",
      "m2": "کمربستگان بر درش صف زدند",
      "verse_number": 3
    },
    {
      "id": "dbdb9c8d-327c-45c0-9bb8-2cc65e6cda0b",
      "m1": "همه یکسره جنگ را ساخته",
      "m2": "دل از بوم و آرام پرداخته",
      "verse_number": 4
    },
    {
      "id": "930ff0d2-5016-4467-889d-b4f58ce01332",
      "m1": "بزرگان توران گشاده کمر",
      "m2": "به پیش سپهدار بر خاک سر",
      "verse_number": 5
    },
    {
      "id": "34a0ba38-f824-4f80-b9f3-1aa61253efa1",
      "m1": "همه جنگ را پاک بسته میان",
      "m2": "همه دل پر از کین ایرانیان",
      "verse_number": 6
    },
    {
      "id": "6eb8fa53-a9b5-4b61-bc8d-e6b62df5561c",
      "m1": "کز اندازه بگذشت ما را سخن",
      "m2": "چه افگند باید بدین کار بن",
      "verse_number": 7
    },
    {
      "id": "2b6ea44b-8c3b-4b1c-8078-8c9c23dae8b1",
      "m1": "کزین ننگ بر شاه و گردنکشان",
      "m2": "بماند ز کردار بیژن نشان",
      "verse_number": 8
    },
    {
      "id": "e0d203c9-5d58-4849-b35e-1dfa70b9ed15",
      "m1": "بایران بمردان ندانندمان",
      "m2": "زنان کمربسته خوانندمان",
      "verse_number": 9
    },
    {
      "id": "3ca8dd87-7857-41f8-a06b-f7156779b511",
      "m1": "برآشفت پس شه بسان پلنگ",
      "m2": "ازان پس بفرمودشان ساز جنگ",
      "verse_number": 10
    },
    {
      "id": "9c3194ab-523b-4259-b557-df8c94f083b1",
      "m1": "به پیران بفرمود تا بست کوس",
      "m2": "که بر ما ز ایران همین بد فسوس",
      "verse_number": 11
    },
    {
      "id": "89275d9b-e3a8-4fc2-b7eb-c49859c9b8f0",
      "m1": "بزد نای رویین بدرگاه شاه",
      "m2": "بجوشید در شهر توران سپاه",
      "verse_number": 12
    },
    {
      "id": "f9d8b661-6548-4d8e-a906-22aae81f2953",
      "m1": "یلان صف کشیدند بر در سرای",
      "m2": "خروش آمد از بوق و هندی درای",
      "verse_number": 13
    },
    {
      "id": "331fb6c1-2cd5-4dcc-92d3-21aa74edf353",
      "m1": "سپاهی ز توران بدان مرز راند",
      "m2": "که روی زمین جز بدریا نماند",
      "verse_number": 14
    },
    {
      "id": "a5896fed-14b0-45d4-8d8b-e4949eaf31f7",
      "m1": "چو از دیدگه دیدبان بنگرید",
      "m2": "زمین را چو دریای جوشان بدید",
      "verse_number": 15
    },
    {
      "id": "8566bae7-d3b3-4844-9f39-9ccf72cf9747",
      "m1": "بر رستم آمد که ببسیچ کار",
      "m2": "که گیتی سیه شد ز گرد سوار",
      "verse_number": 16
    },
    {
      "id": "4bd430a4-b5ba-419c-b962-1c943f2d5c82",
      "m1": "بدو گفت ما زین نداریم باک",
      "m2": "همی جنگ را برفشانیم خاک",
      "verse_number": 17
    },
    {
      "id": "2c13ff14-8fd8-43a0-b1c6-8d39334518e7",
      "m1": "بنه با منیژه گسی کرد و بار",
      "m2": "بپوشید خود جامهٔ کارزار",
      "verse_number": 18
    },
    {
      "id": "cd167adb-2639-4d11-9c6e-a9e035c9cd3b",
      "m1": "ببالا برآمد سپه را بدید",
      "m2": "خروشی چو شیر ژیان برکشید",
      "verse_number": 19
    },
    {
      "id": "210d49bc-f540-485b-bf28-5ba3154c6729",
      "m1": "یکی داستان زد سوار دلیر",
      "m2": "که روبه چه سنجد بچنگال شیر",
      "verse_number": 20
    },
    {
      "id": "72812692-0315-4f29-846b-1a9b6c2d1286",
      "m1": "بگردان جنگاور آواز کرد",
      "m2": "که پیش آمد امروز ننگ و نبرد",
      "verse_number": 21
    },
    {
      "id": "1671cac9-9136-44ab-ba98-46c4c24a901b",
      "m1": "کجا تیغ و ژوپین زهرآبدار",
      "m2": "کجا نیزه و گُرزهٔ گاوسار",
      "verse_number": 22
    },
    {
      "id": "21b769d2-5425-4f67-8adb-bc5078a9da5a",
      "m1": "هنرها کنون کرد باید پدید",
      "m2": "برین دشتبر کینه باید کشید",
      "verse_number": 23
    },
    {
      "id": "f04b03f9-84a5-457a-8368-eb5591e5f653",
      "m1": "برآمد خروشیدن کرنای",
      "m2": "تهمتن برخش اندر آورد پای",
      "verse_number": 24
    },
    {
      "id": "8ca0235f-4542-496c-8379-bc46b550dbe9",
      "m1": "ازان کوه سر سوی هامون کشید",
      "m2": "چو لشکر بتنگ اندر آمد پدید",
      "verse_number": 25
    },
    {
      "id": "2a6436d7-d855-40e2-a2f5-53a27c199ef8",
      "m1": "کشیدند لشکر بران پهن جای",
      "m2": "بهرسو ببستند ز آهن سرای",
      "verse_number": 26
    },
    {
      "id": "50ed1e59-e50d-4fe5-b470-76620d8e89d1",
      "m1": "بیاراست رستم یکی رزمگاه",
      "m2": "که از گرد اسبان هوا شد سیاه",
      "verse_number": 27
    },
    {
      "id": "3de0dd0f-b342-4f2d-b6c4-82af756ad334",
      "m1": "ابر میمنه اشکش و گستهم",
      "m2": "سواران بسیار با او بهم",
      "verse_number": 28
    },
    {
      "id": "880a6869-f786-4158-938f-cd357a49eeea",
      "m1": "چو رهام و چون زنگه بر میسره",
      "m2": "بخون داده مر جنگ را یکسره",
      "verse_number": 29
    },
    {
      "id": "4c4497bb-32bc-47a4-b026-56283bce52cd",
      "m1": "خود و بیژن گیو در قلبگاه",
      "m2": "نگهدار گردان و پشت سپاه",
      "verse_number": 30
    },
    {
      "id": "12e84bbd-2c7c-4f93-919d-72a21a3bdd5c",
      "m1": "پس پشت لشکر که بیستون",
      "m2": "حصاری ز شمشیر پیش اندرون",
      "verse_number": 31
    },
    {
      "id": "41ac675a-09e6-4389-806a-06f86082b3a9",
      "m1": "چو افراسیاب آن سپه را بدید",
      "m2": "که سالارشان رستم آمد پدید",
      "verse_number": 32
    },
    {
      "id": "98ae0fab-d6bd-45dd-9275-523584ef49c3",
      "m1": "غمی گشت و پوشید خفتان جنگ",
      "m2": "سپه را بفرمود کردن درنگ",
      "verse_number": 33
    },
    {
      "id": "850433dc-5705-42de-ab79-00dd54fe1556",
      "m1": "برابر بهآیین صفی برکشید",
      "m2": "هوا نیلگون شد زمین ناپدید",
      "verse_number": 34
    },
    {
      "id": "34863c60-283a-4a38-9a95-aa342de6ba13",
      "m1": "چپ لشکرش را بپیران سپرد",
      "m2": "سوی راستش را به هومان گرد",
      "verse_number": 35
    },
    {
      "id": "a369bfdc-5a5b-4072-b8d6-10582c256933",
      "m1": "بگرسیوز و شیده قلب سپاه",
      "m2": "سپرد و همی کرد هر سو نگاه",
      "verse_number": 36
    },
    {
      "id": "2116af6d-bb08-4a27-8740-5a42c4eb1368",
      "m1": "تهمتن همی گشت گرد سپاه",
      "m2": "ز آهن بکردار کوهی سیاه",
      "verse_number": 37
    },
    {
      "id": "ea0e3d60-b914-4f24-bdf0-ef95fae0d7c3",
      "m1": "فغان کرد کای ترک شوریده بخت",
      "m2": "که ننگی تو بر لشکر و تاج و تخت",
      "verse_number": 38
    },
    {
      "id": "61ef567e-30c2-434e-8b4d-de3acafc22f9",
      "m1": "ترا چون سواران دل جنگ نیست",
      "m2": "ز گردان لشکر ترا ننگ نیست",
      "verse_number": 39
    },
    {
      "id": "840f82d4-e1a5-4596-86d7-f77f3d50d0ef",
      "m1": "که چندین بپیش من آیی بکین",
      "m2": "بمردان و اسبان بپوشی زمین",
      "verse_number": 40
    },
    {
      "id": "e4d5dd05-b095-49e5-bd41-429b6602ddf1",
      "m1": "چو در جنگ لشکر شود تیزچنگ",
      "m2": "همی پشت بینم ترا سوی جنگ",
      "verse_number": 41
    },
    {
      "id": "5e8c6915-7923-44af-869c-be10ff10edbd",
      "m1": "ز دستان تو نشنیدی آن داستان",
      "m2": "که دارد بیاد از گه باستان",
      "verse_number": 42
    },
    {
      "id": "9a932e88-4351-4ee8-9181-fe4688407baa",
      "m1": "که شیری نترسد ز یک دشت گور",
      "m2": "ستاره نتابد چو تابنده هور",
      "verse_number": 43
    },
    {
      "id": "2dd75ac0-58a6-4477-a5b1-dcc0562c7fef",
      "m1": "بدرد دل و گوش غرم سترگ",
      "m2": "اگر بشنود نام چنگال گرگ",
      "verse_number": 44
    },
    {
      "id": "d58bc947-b273-4026-bce9-b9943fd6f927",
      "m1": "چو اندر هوا باز گسترد پر",
      "m2": "بترسد ز چنگال او کبک نر",
      "verse_number": 45
    },
    {
      "id": "e1c3bd60-d858-4465-9427-b1efa7a2dbec",
      "m1": "نه روبه شود ز آزمودن دلیر",
      "m2": "نه گوران بسایند چنگال شیر",
      "verse_number": 46
    },
    {
      "id": "7e5f6ffd-4c1d-4d79-a430-6fbf47ee9bc3",
      "m1": "چو تو کس سبکسار خسرو مباد",
      "m2": "چو باشد دهد پادشاهی بباد",
      "verse_number": 47
    },
    {
      "id": "90daefe9-4427-4239-8347-3f62fd9f15cf",
      "m1": "بدین دشت و هامون تو از دست من",
      "m2": "رهایی نیابی بجان و بتن",
      "verse_number": 48
    },
    {
      "id": "4326e5fa-f3f9-4baf-acc0-85af474a1642",
      "m1": "چو این گفته بشنید ترک دژم",
      "m2": "بلرزید و برزد یکی تیز دم",
      "verse_number": 49
    },
    {
      "id": "8fee2904-6da2-40a3-96d5-4b3b44d5a48a",
      "m1": "برآشفت کای نامداران تور",
      "m2": "که این دشت جنگست گر جای سور",
      "verse_number": 50
    },
    {
      "id": "42a9cb54-66ba-4583-a26c-20ca24e44f67",
      "m1": "بباید کشیدن درین رزم رنج",
      "m2": "که بخشم شما رابسی تاج و گنج",
      "verse_number": 51
    },
    {
      "id": "4a63735e-3e8d-41d8-9110-9eb6368fd5c4",
      "m1": "چو گفتار سالارشان شد بگوش",
      "m2": "زگردان لشکر برآمد خروش",
      "verse_number": 52
    },
    {
      "id": "5684280d-4682-4ffe-987e-196366252344",
      "m1": "چنان تیرهگون شد ز گرد آفتاب",
      "m2": "که گفتی همی غرقه ماند در آب",
      "verse_number": 53
    },
    {
      "id": "6b5be4e7-1af1-4519-87fc-1b4f2d262444",
      "m1": "ببستند بر پیل رویینه خم",
      "m2": "دمیدند شیپور با گاودم",
      "verse_number": 54
    },
    {
      "id": "87016e2f-93cf-44c6-8b38-c37b17c2c11e",
      "m1": "ز جوشن یکی بارهٔ آهنین",
      "m2": "کشیدند گردان بروی زمین",
      "verse_number": 55
    },
    {
      "id": "9580ed24-5d05-4bb7-ae38-36fc0affb4e0",
      "m1": "بجوشید دشت و بتوفید کوه",
      "m2": "ز بانگ سواران هر دو گروه",
      "verse_number": 56
    },
    {
      "id": "e32a9eac-3d01-4768-8893-254522961b95",
      "m1": "درفشان بگرد اندرون تیغ تیز",
      "m2": "تو گفتی برآمد همی رستخیز",
      "verse_number": 57
    },
    {
      "id": "0be65123-1b0c-4e41-9e08-08d1d176329c",
      "m1": "همی گُرز بارید همچون تگرگ",
      "m2": "ابر جوشن و تیر و بر خود و ترگ",
      "verse_number": 58
    },
    {
      "id": "71776cdd-d07b-44c3-a7ba-68302fe93fce",
      "m1": "و زان رستمی اژدهافش درفش",
      "m2": "شده روی خورشید تابان بنفش",
      "verse_number": 59
    },
    {
      "id": "b6118b15-a095-4aac-99ea-1d17b9e04285",
      "m1": "بپوشید روی هوا گرد پیل",
      "m2": "بخورشید گفتی براندود نیل",
      "verse_number": 60
    },
    {
      "id": "3fe248d0-36e6-4783-a13d-9692621f188b",
      "m1": "بهر سو که رستم برافگند رخش",
      "m2": "سران را سر از تن همی کرد بخش",
      "verse_number": 61
    },
    {
      "id": "b200e47a-8961-4237-9782-25170d94a70f",
      "m1": "به چنگ اندرون گُرزهٔ گاوسار",
      "m2": "بسان هیونی گسسته مهار",
      "verse_number": 62
    },
    {
      "id": "38b90a7f-80cb-473f-8cdd-d26aa1d6a060",
      "m1": "همی کشت و میبست در رزمگاه",
      "m2": "چو بسیار کرد از بزرگان تباه",
      "verse_number": 63
    },
    {
      "id": "c1917de0-1286-42b0-acd8-a6a395477c2b",
      "m1": "بقلب اندر آمد بکردار گرگ",
      "m2": "پراگنده کرد آن سپاه بزرگ",
      "verse_number": 64
    },
    {
      "id": "25e66a9a-2971-4c24-8153-f233baee5715",
      "m1": "برآمد چو باد آن سران را ز جای",
      "m2": "همان بادپایان فرخ همای",
      "verse_number": 65
    },
    {
      "id": "efcc892a-41e9-4b55-9cff-2ce991578fcf",
      "m1": "چو گرگین و رهام و فرهاد گرد",
      "m2": "چپ لشکر شاه توران ببرد",
      "verse_number": 66
    },
    {
      "id": "bcfe8bb7-a6a2-46e7-b4b4-64885e861f35",
      "m1": "درآمد چو باد اشکش از دست راست",
      "m2": "ز گرسیوز تیغزن کینه خواست",
      "verse_number": 67
    },
    {
      "id": "7c7f568f-cae4-4ce8-a23a-f4ee69af9b5d",
      "m1": "بقلب اندرون بیژن تیزچنگ",
      "m2": "همی بزمگاه آمدش جای جنگ",
      "verse_number": 68
    },
    {
      "id": "4f72ed00-51be-48c4-b678-a0d7642f3800",
      "m1": "سران سواران چو برگ درخت",
      "m2": "فرو ریخت از بار و برگشت بخت",
      "verse_number": 69
    },
    {
      "id": "d42afca8-b82c-4d94-95b8-d8fca3f4d10a",
      "m1": "همه رزمگه سربسر جوی خون",
      "m2": "درفش سپهدار توران نگون",
      "verse_number": 70
    },
    {
      "id": "c48b5769-404e-4efc-a7cd-1f830540d1f1",
      "m1": "سپهدار چون بخت برگشته دید",
      "m2": "دلیران توران همه کشته دید",
      "verse_number": 71
    },
    {
      "id": "11fc5235-0804-4d38-b879-5e78601ecd4f",
      "m1": "بیفگند شمشیر هندی ز دست",
      "m2": "یکی اسب آسودهتر برنشست",
      "verse_number": 72
    },
    {
      "id": "011814ab-f55e-4420-b7cf-e1c80ed162ab",
      "m1": "خود و ویژگان سوی توران شتافت",
      "m2": "کزایرانیان کام و کینه نیافت",
      "verse_number": 73
    },
    {
      "id": "fb788a43-e718-4892-bb1b-657c4306f16b",
      "m1": "برفت از پسش رستم گرد گیر",
      "m2": "ببارید بر لشکرش گُرز و تیر",
      "verse_number": 74
    },
    {
      "id": "8d6f3296-5284-4eda-9200-7e54ee1b0e43",
      "m1": "دو فرسنگ چون اژدهای دژم",
      "m2": "همی مردم آهخت ازیشان بدم",
      "verse_number": 75
    },
    {
      "id": "d210f1b1-dc43-4027-aec7-1f541e222c37",
      "m1": "سواران جنگی ز توران هزار",
      "m2": "گرفتند زنده پس از کارزار",
      "verse_number": 76
