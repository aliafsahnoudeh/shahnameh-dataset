{
  "id": "39064f2c-6423-4abc-af7d-77fcdd87118a",
  "title": "بخش ۱",
  "verses": [
    {
      "id": "4ffea3dc-1806-439e-bc7c-465246321901",
      "m1": "چو بر تخت بنشست بهرام گور",
      "m2": "برو آفرین کرد بهرام و هور",
      "verse_number": 1
    },
    {
      "id": "b11648a7-c210-439e-becd-bc708111815e",
      "m1": "پرستش گرفت آفریننده را",
      "m2": "جهاندار و بیدار و بیننده را",
      "verse_number": 2
    },
    {
      "id": "7f981e0f-c7fa-4723-9db7-6f9141a3c083",
      "m1": "خداوند پیروزی و برتری",
      "m2": "خداوند افزونی و کمتری",
      "verse_number": 3
    },
    {
      "id": "1a464ada-7c63-4923-a088-177213161699",
      "m1": "خداوند داد و خداوند رای",
      "m2": "کزویست گیتی سراسر به پای",
      "verse_number": 4
    },
    {
      "id": "7c443e9f-9dfa-46bd-bfd2-847f08fa7f42",
      "m1": "ازان پس چنین گفت کاین تاج و تخت",
      "m2": "ازو یافتم کهآفریدهست بخت",
      "verse_number": 5
    },
    {
      "id": "14436165-c486-40f6-b190-9408b309af0a",
      "m1": "بدو هستم امید و هم زو هراس",
      "m2": "وزو دارم از نیکویها سپاس",
      "verse_number": 6
    },
    {
      "id": "436ff2f3-9bde-46d7-9bb4-38d2a4c66006",
      "m1": "شما هم بدو نیز نازش کنید",
      "m2": "بکوشید تا عهد او نشکنید",
      "verse_number": 7
    },
    {
      "id": "d46b7747-5f3b-4176-b442-9f0ddc006b39",
      "m1": "زبان برگشادند ایرانیان",
      "m2": "که بستیم ما بندگی را میان",
      "verse_number": 8
    },
    {
      "id": "85fd98e0-194c-4343-be7c-98035fee907e",
      "m1": "که این تاج بر شاه فرخنده باد",
      "m2": "همیشه دل و بخت او زنده باد",
      "verse_number": 9
    },
    {
      "id": "35b3c7f5-1c0e-4a3c-bb25-543c80775e90",
      "m1": "وزان پس همه آفرین خواندند",
      "m2": "همه بر سرش گوهر افشاندند",
      "verse_number": 10
    },
    {
      "id": "44d15dd4-f64f-4813-b9f2-051e3255747c",
      "m1": "چنین گفت بهرام کای سرکشان",
      "m2": "ز نیک و بد روز دیده نشان",
      "verse_number": 11
    },
    {
      "id": "0c62fb4d-1977-4ad4-ba3e-dde40f5359f3",
      "m1": "همه بندگانیم و ایزد یکیست",
      "m2": "پرستش جز او را سزاوار نیست",
      "verse_number": 12
    },
    {
      "id": "ecc8d7d9-b218-4fc5-b3f8-40c76e5f524c",
      "m1": "ز بدْروز بیبیم داریمتان",
      "m2": "به بدخواه حاجت نیاریمتان",
      "verse_number": 13
    },
    {
      "id": "3ed371bf-ad9a-4caa-b5d5-c2b34aec2e48",
      "m1": "بگفت این و از پیش برخاستند",
      "m2": "برو آفرین نو آراستند",
      "verse_number": 14
    },
    {
      "id": "5d00e284-a502-4648-b959-48a1e4edf37b",
      "m1": "شب تیره بودند با گفتوگوی",
      "m2": "چو خورشید بر چرخ بنمود روی",
      "verse_number": 15
    },
    {
      "id": "a4113260-535f-46ef-96ea-738e7fff5ea9",
      "m1": "به آرام بنشست بر گاه شاه",
      "m2": "برفتند ایرانیان بارخواه",
      "verse_number": 16
    },
    {
      "id": "99ba6615-d59d-4cec-b0df-08fcc8607130",
      "m1": "چنین گفت بهرام با مهتران",
      "m2": "که این نیکنامان و نیکاختران",
      "verse_number": 17
    },
    {
      "id": "e3c226da-f6c2-4ee0-aa1f-48b235573644",
      "m1": "به یزدان گراییم و رامش کنیم",
      "m2": "بتازیم و دل زین جهان برکنیم",
      "verse_number": 18
    },
    {
      "id": "3642911f-b961-4120-8346-9136892c0957",
      "m1": "بگفت این و اسپ کیان خواستند",
      "m2": "کیی بارگاهش بیاراستند",
      "verse_number": 19
    },
    {
      "id": "c06b0f80-718c-4fc8-b72b-349c096b3e69",
      "m1": "سه دیگر چو بنشست بر تخت گفت",
      "m2": "که رسم پرستش نباید نهفت",
      "verse_number": 20
    },
    {
      "id": "76fcf11c-2e19-496d-a0a1-d3bd0c7f23cb",
      "m1": "به هستی یزدان گوایی دهیم",
      "m2": "روان را بدین آشنایی دهیم",
      "verse_number": 21
    },
    {
      "id": "55dd6932-e005-4ccd-9d47-f268b153654b",
      "m1": "بهشتست و هم دوزخ و رستخیز",
      "m2": "ز نیک و ز بد نیست راه گریز",
      "verse_number": 22
    },
    {
      "id": "e7d85ab0-48e3-41fd-a5c6-f9b782ddcb57",
      "m1": "کسی کاو نگرود به روز شمار",
      "m2": "مر او را تو بادین و دانا مدار",
      "verse_number": 23
    },
    {
      "id": "1d6ca195-0ed2-42e8-9fa6-fed3504156df",
      "m1": "به روز چهارم چو بر تخت عاج",
      "m2": "بسر بر نهاد آن پسندیده تاج",
      "verse_number": 24
    },
    {
      "id": "534db6d6-5c38-4f2b-891e-b4d9790bc0ca",
      "m1": "چنین گفت کز گنج من یک زمان",
      "m2": "نیم شاد کز مردم شادمان",
      "verse_number": 25
    },
    {
      "id": "22411b30-8c2a-4d81-9b72-073dae862f4f",
      "m1": "نیم خواستار سرای سپنج",
      "m2": "نه از بازگشتن به تیمار و رنج",
      "verse_number": 26
    },
    {
      "id": "bad3fcd9-365a-4cfe-9d1a-c9fba5e2526f",
      "m1": "که آنست جاوید و این رهگذار",
      "m2": "تو از آز پرهیز و انده مدار",
      "verse_number": 27
    },
    {
      "id": "7dc05432-dfcc-4543-8b48-eb07c4f7e3ab",
      "m1": "به پنجم چنین گفت کز رنج کس",
      "m2": "نیم شاد تا باشدم دسترس",
      "verse_number": 28
    },
    {
      "id": "c1656326-5585-4b49-9d11-1e8234ba713e",
      "m1": "به کوشش بجوییم خرم بهشت",
      "m2": "خنک آنک جز تخم نیکی نکشت",
      "verse_number": 29
    },
    {
      "id": "f689df87-7363-4479-b675-874301f624ec",
      "m1": "ششم گفت بر مردم زیردست",
      "m2": "مبادا که هرگز بجویم شکست",
      "verse_number": 30
    },
    {
      "id": "7352236e-75f8-48d8-9008-dc171f4d7e3b",
      "m1": "جهان را ز دشمن تنآسان کنیم",
      "m2": "بداندیشگان را هراسان کنیم",
      "verse_number": 31
    },
    {
      "id": "cb9d0031-88ed-4240-8760-e00ab7f7bcb0",
      "m1": "به هفتم چو بنشست گفت ای مهان",
      "m2": "خردمند و بیدار و دیده جهان",
      "verse_number": 32
    },
    {
      "id": "cfe63e4e-a19c-46d8-889c-ffcd31c87aed",
      "m1": "چو با مردم زفت زفتی کنیم",
      "m2": "همی با خردمند جفتی کنیم",
      "verse_number": 33
    },
    {
      "id": "88648cfa-2136-4f66-82a0-86e514a24faf",
      "m1": "هرانکس که با ما نسازند گرم",
      "m2": "بدی بیش ازان بیند او کز پدرم",
      "verse_number": 34
    },
    {
      "id": "17add29e-9343-4e69-9a95-8cf77d151f6e",
      "m1": "هرانکس که فرمان ما برگزید",
      "m2": "غم و درد و رنجش نباید کشید",
      "verse_number": 35
    },
    {
      "id": "4d9fba47-aa19-4e62-8d63-e630502f7dc7",
      "m1": "به هشتم چو بنشست فرمود شاه",
      "m2": "جوانوی را خواندن از بارگاه",
      "verse_number": 36
    },
    {
      "id": "92307a2e-6321-43eb-9336-5fa5ecca8708",
      "m1": "بدو گفت نزدیک هر مهتری",
      "m2": "به هر نامداری و هر کشوری",
      "verse_number": 37
    },
    {
      "id": "25636ef6-f61e-4839-ab4d-ee11de17539d",
      "m1": "یکی نامه بنویس با مهر و داد",
      "m2": "که بهرام بنشست بر تخت شاد",
      "verse_number": 38
    },
    {
      "id": "9d2e53dc-e708-4b72-9ffe-d3700df89eae",
      "m1": "خداوند بخشایش و راستی",
      "m2": "گریزنده از کژی و کاستی",
      "verse_number": 39
    },
    {
      "id": "a9616d1f-d275-43bf-b7c0-144fbfda2d59",
      "m1": "که با فر و برزست و با مهر و داد",
      "m2": "نگیرد جز از پاک دادار یاد",
      "verse_number": 40
    },
    {
      "id": "3e5481cd-39f8-4154-a80f-4a4508e518eb",
      "m1": "پذیرفتم آن را که فرمان برد",
      "m2": "گناه آن سگالد که درمان برد",
      "verse_number": 41
    },
    {
      "id": "6d30b9f1-0a3e-4049-adfe-c78ddfa900d7",
      "m1": "نشستم برین تخت فرخ پدر",
      "m2": "بر آیین طهمورث دادگر",
      "verse_number": 42
    },
    {
      "id": "d15643ca-303e-4e7e-a432-fcd9cc6b0d79",
      "m1": "به داد از نیاکان فزونی کنم",
      "m2": "شما را به دین رهنمونی کنم",
      "verse_number": 43
    },
    {
      "id": "b3054fe4-2b7f-43fd-9311-e8e38b7b506e",
      "m1": "جز از راستی نیست با هرکسی",
      "m2": "اگر چند ازو کژی آید بسی",
      "verse_number": 44
    },
    {
      "id": "ce5ae831-76ac-4539-9dfa-825cd8f408e4",
      "m1": "بران دین زردشت پیغمبرم",
      "m2": "ز راه نیاکان خود نگذرم",
      "verse_number": 45
    },
    {
      "id": "b44bc9a3-3287-4c65-bc19-8365b2f459a3",
      "m1": "نهم گفت زردشت پیشین بروی",
      "m2": "براهیم پیغمبر راستگوی",
      "verse_number": 46
    },
    {
      "id": "25f62ed7-f6bf-45a6-b797-d4f804439976",
      "m1": "همه پادشاهید بر چیز خویش",
      "m2": "نگهبان مرز و نگهبان کیش",
      "verse_number": 47
    },
    {
      "id": "82a1e57f-9cd3-4311-8f27-6ca56c32def6",
      "m1": "به فرزند و زن نیز هم پادشا",
      "m2": "خنک مردم زیرک و پارسا",
      "verse_number": 48
    },
    {
      "id": "d2054b99-ea3a-4e3e-9f1f-3ff761f2d536",
      "m1": "نخواهیم آگندن زر به گنج",
      "m2": "که از گنج درویش ماند به رنج",
      "verse_number": 49
    },
    {
      "id": "0c303c3a-6734-4fd8-a023-cedd7bd61ce0",
      "m1": "گر ایزد مرا زندگانی دهد",
      "m2": "برین اختران کامرانی دهد",
      "verse_number": 50
    },
    {
      "id": "07503b6f-a143-43bc-8719-c38744ce1284",
      "m1": "یکی رامشی نامه خوانید نیز",
      "m2": "کزان جاودان ارج یابید و چیز",
      "verse_number": 51
    },
    {
      "id": "20849d3b-835b-4849-b78b-adb450a64ef7",
      "m1": "ز ما بر همه پادشاهی درود",
      "m2": "به ویژه که مهرش بود تار و پود",
      "verse_number": 52
    },
    {
      "id": "d0652a82-63bc-434d-95af-6d20daf137c9",
      "m1": "نهادند بر نامهها بر نگین",
      "m2": "فرستادگان خواست با آفرین",
      "verse_number": 53
    },
    {
      "id": "f2b11f5c-7ca8-4470-89e4-f02eb8ec4e43",
      "m1": "برفتند با نامهها موبدان",
      "m2": "سواران بینادل و بخردان",
      "verse_number": 54
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 54
  }
}