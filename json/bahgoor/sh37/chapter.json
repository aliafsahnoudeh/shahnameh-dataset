{
  "id": "5211f86a-f42d-45cd-a47e-bb294f324bed",
  "title": "بخش ۳۷",
  "verses": [
    {
      "id": "c8c564df-74ff-4249-8cce-652900a18ab3",
      "m1": "همان شاه شنگل دلی پر ز درد",
      "m2": "همی داشت از کار او روی زرد",
      "verse_number": 1
    },
    {
      "id": "88b8407b-103a-4cc3-aa5a-5c74de7a2c88",
      "m1": "شب آمد بیاورد فرزانه را",
      "m2": "همان مردم خویش و بیگانه را",
      "verse_number": 2
    },
    {
      "id": "a758ee27-49bb-4759-8763-ff089eaa85d4",
      "m1": "چنین گفت کاین مرد بهرامشاه",
      "m2": "بدین زور و این شاخ و این دستگاه",
      "verse_number": 3
    },
    {
      "id": "c7a9cc43-bcb3-4362-8e74-f707eb970749",
      "m1": "نباشد همی ایدر از هیچ روی",
      "m2": "ز هرگونه آمیختم رنگ و بوی",
      "verse_number": 4
    },
    {
      "id": "6784d305-c9b9-4e73-aa4a-a33b24f72629",
      "m1": "گر از نزد ما او به ایران شود",
      "m2": "به نزدیک شاه دلیران شود",
      "verse_number": 5
    },
    {
      "id": "f58387aa-7ed7-4e85-b59d-4971497d354b",
      "m1": "سپاه مرا سست خواند به کار",
      "m2": "به هندوستان نیست گوید سوار",
      "verse_number": 6
    },
    {
      "id": "36417eb4-0e04-4c20-b298-18486ffb9626",
      "m1": "سرافراز گردد مگر دشمنم",
      "m2": "فرستاده را سر ز تن برکنم",
      "verse_number": 7
    },
    {
      "id": "ec7a01c7-6537-406e-87cf-962d91e45487",
      "m1": "نهانش همی کرد خواهم تباه",
      "m2": "چه بینید این را چه دانید راه",
      "verse_number": 8
    },
    {
      "id": "06341805-e7a6-4917-bee9-eba3d0bbc89b",
      "m1": "بدو گفت فرزانه کای شهریار",
      "m2": "دلت را بدینگونه رنجه مدار",
      "verse_number": 9
    },
    {
      "id": "e6752b24-59df-43fd-a471-ef829a8884a7",
      "m1": "فرستادهٔ شهریاران کشی",
      "m2": "به غمری برد راه و بیدانشی",
      "verse_number": 10
    },
    {
      "id": "3f82cd17-56da-4f20-b7fb-3db53899981b",
      "m1": "کس اندیشه زینگونه هرگز نکرد",
      "m2": "به راه چنین رای هرگز مگرد",
      "verse_number": 11
    },
    {
      "id": "9a66781a-a7de-4098-a0f1-0e449c09fa0a",
      "m1": "بر مهتران زشتنامی بود",
      "m2": "سپهبد به مردم گرامی بود",
      "verse_number": 12
    },
    {
      "id": "6fdd86e2-d714-4e14-9962-f772e2a3257d",
      "m1": "پسانگه بیاید از ایران سپاه",
      "m2": "یکی تاجداری چو بهرامشاه",
      "verse_number": 13
    },
    {
      "id": "8cf0fdb2-8b10-443c-bf4e-2175cb70f941",
      "m1": "نماند ز ما کس بدینجا درست",
      "m2": "ز نیکی نباید ترا دست شست",
      "verse_number": 14
    },
    {
      "id": "6574a947-952a-4af6-9f57-27f91fe838a5",
      "m1": "رهانیدهٔ ماست از اژدها",
      "m2": "نه کشتن بود رنج او را بها",
      "verse_number": 15
    },
    {
      "id": "f25e760d-f123-4552-933f-311bf75499db",
      "m1": "بدین بوم ما اژدها کشت و کرگ",
      "m2": "به تن زندگانی فزایش نه مرگ",
      "verse_number": 16
    },
    {
      "id": "565076e2-f150-43c2-b721-ed82f2bbb511",
      "m1": "چو بشنید شنگل سخن تیره شد",
      "m2": "ز گفتار فرزانگان خیره شد",
      "verse_number": 17
    },
    {
      "id": "fabc4d46-9e1d-44f0-9440-9d0ca7e7d547",
      "m1": "ببود آن شب و بامداد پگاه",
      "m2": "فرستاد کس نزد بهرامشاه",
      "verse_number": 18
    },
    {
      "id": "b15b4922-90e2-4a3c-b91b-bedda9df3400",
      "m1": "به تنها تن خویش بیانجمن",
      "m2": "نه دستور بد پیش و نه رای زن",
      "verse_number": 19
    },
    {
      "id": "0058eb1c-6a55-43eb-98e8-c28676f2cb3f",
      "m1": "به بهرام گفت ای دلارای مرد",
      "m2": "توانگر شدی گرد بیشی مگرد",
      "verse_number": 20
    },
    {
      "id": "a1d5d470-0ab6-4870-b0ba-d8348c22b758",
      "m1": "بتو داد خواهم همی دخترم",
      "m2": "ز گفتار و کردار باشد برم",
      "verse_number": 21
    },
    {
      "id": "29e6f1ba-a845-4b12-877f-313f71396f55",
      "m1": "چو این کرده باشم بر من بایست",
      "m2": "کز ایدر گذشتن ترا روی نیست",
      "verse_number": 22
    },
    {
      "id": "e3816f67-919f-4573-9078-9ab5925045a6",
      "m1": "ترا بر سپه کامگاری دهم",
      "m2": "به هندوستان شهریاری دهم",
      "verse_number": 23
    },
    {
      "id": "1206aa7f-4d87-4afe-a0ca-e7668b762ab9",
      "m1": "فروماند بهرام و اندیشه کرد",
      "m2": "ز تخت و نژاد و ز ننگ و نبرد",
      "verse_number": 24
    },
    {
      "id": "f311a53f-4be3-4dfb-b446-dd0f01dd084c",
      "m1": "ابا خویشتن گفت کاین جنگ نیست",
      "m2": "ز پیوند شنگل مرا ننگ نیست",
      "verse_number": 25
    },
    {
      "id": "ace9757c-ec08-4a21-8750-87a8f60db43e",
      "m1": "و دیگر که جان بر سر آرم بدین",
      "m2": "ببینم مگر خاک ایران زمین",
      "verse_number": 26
    },
    {
      "id": "5c4234bd-a5d6-4216-b642-410e41bf6998",
      "m1": "که ایدر بدینسان بماندیم دیر",
      "m2": "برآویخت با دام روباه شیر",
      "verse_number": 27
    },
    {
      "id": "781afd87-3f7b-437e-819d-55faa512b8d3",
      "m1": "چنین داد پاسخ که فرمان کنم",
      "m2": "ز گفتارت آرایش جان کنم",
      "verse_number": 28
    },
    {
      "id": "0a5d59d0-dc14-486a-ba04-3b602bfd0872",
      "m1": "تو از هر سه دختر یکی برگزین",
      "m2": "که چون بینمش خوانمش آفرین",
      "verse_number": 29
    },
    {
      "id": "fc679a75-35a7-45ea-a793-a4f949b1cd89",
      "m1": "ز گفتار او شاد شد شاه هند",
      "m2": "بیاراست ایوان به چینی پرند",
      "verse_number": 30
    },
    {
      "id": "741bc7f5-90a2-4f5c-9ab4-e726a467f85e",
      "m1": "سه دختر بیامد چو خرم بهار",
      "m2": "به آرایش و بوی و رنگ و نگار",
      "verse_number": 31
    },
    {
      "id": "6f052932-5b6c-4ec1-8047-1bfdd4f94430",
      "m1": "به بهرام گور آن زمان گفت رو",
      "m2": "بیارای دل را به دیدار نو",
      "verse_number": 32
    },
    {
      "id": "e90d62a0-1b11-4884-84e3-47b6f2d3e0b4",
      "m1": "بشد تیز بهرام و او را بدید",
      "m2": "ازان ماهرویان یکی برگزید",
      "verse_number": 33
    },
    {
      "id": "9d15c6d0-d32e-4550-917d-c5861614b640",
      "m1": "چو خرم بهاری سپینود نام",
      "m2": "همه شرم و ناز و همه رای و کام",
      "verse_number": 34
    },
    {
      "id": "920f6afb-a3b6-4319-8775-3ad099575806",
      "m1": "بدو داد شنگل سپینود را",
      "m2": "چو سرو سهی شمع بیدود را",
      "verse_number": 35
    },
    {
      "id": "9a36584e-f78e-4539-9ebd-bb4e4f32cfba",
      "m1": "یکی گنج پرمایهتر برگزید",
      "m2": "بدان ماهرخ داد شنگل کلید",
      "verse_number": 36
    },
    {
      "id": "772d993a-ee62-41c5-9669-bf7b28b7427e",
      "m1": "بیاورد یاران بهرام را",
      "m2": "سواران بازیب و با نام را",
      "verse_number": 37
    },
    {
      "id": "7f63baaf-fbc7-4bbc-8b14-2b8f25738433",
      "m1": "درم داد ودینار و هرگونه چیز",
      "m2": "همان عنبر و عود و کافورنیز",
      "verse_number": 38
    },
    {
      "id": "c1bdc9a9-d3e8-4e20-94e5-3f352860d3a4",
      "m1": "بیاراست ایوان گوهرنگار",
      "m2": "ز قنوج هرکس که بد نامدار",
      "verse_number": 39
    },
    {
      "id": "cbaabe07-d27a-48c3-9864-f492208c79d8",
      "m1": "خرامان بران بزمگاه آمدند",
      "m2": "به شادی همه نزد شاه آمدند",
      "verse_number": 40
    },
    {
      "id": "1ae9afb3-b8b3-4f3b-afa7-87a9e146aa69",
      "m1": "ببودند یک هفته با می به دست",
      "m2": "همه شاد و خرم به جای نشست",
      "verse_number": 41
    },
    {
      "id": "18288059-5b33-4cb8-9c5d-1de8cab08c58",
      "m1": "سپینود با شاه بهرام گور",
      "m2": "چو می بود روشن به جام بلور",
      "verse_number": 42
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 42
  },
