{
  "id": "c2e6bf14-4e19-4c14-850f-1c8ef2f3623c",
  "title": "بخش ۲۷",
  "verses": [
    {
      "id": "8de21194-9bd5-4aba-ad65-7b403e994e0b",
      "m1": "سپهبد فرستاده را پیش خواند",
      "m2": "بران نامور پیشگاهش نشاند",
      "verse_number": 1
    },
    {
      "id": "c83b6ec1-50e3-4336-abae-0efa8f4bd28b",
      "m1": "چو بشنید بیدار شاه جهان",
      "m2": "فرستاده را خواند پیش مهان",
      "verse_number": 2
    },
    {
      "id": "1ff920ef-3b88-4b3c-ac24-3cc269219926",
      "m1": "بیامد جهاندیده دانای پیر",
      "m2": "سخنگوی و بادانش و یادگیر",
      "verse_number": 3
    },
    {
      "id": "00996250-4cca-41bd-b2a7-34a427d937d7",
      "m1": "به کش کرده دست و سرافگنده پست",
      "m2": "بر تخت شاهی به زانو نشست",
      "verse_number": 4
    },
    {
      "id": "434b90a6-9e8a-48ca-a807-634031f281a1",
      "m1": "بپرسید بهرام و بنواختش",
      "m2": "بر تخت پیروزه بنشاختش",
      "verse_number": 5
    },
    {
      "id": "d7c9d39f-0fcd-48e5-8e8f-61b2b6d9017b",
      "m1": "بدو گفت کایدر بماندی تو دیر",
      "m2": "ز دیدار این مرز ناگشته سیر",
      "verse_number": 6
    },
    {
      "id": "fdde1572-bb2b-49ba-a861-94d11a1f7489",
      "m1": "مرا رزم خاقان ز تو باز داشت",
      "m2": "به گیتی مرا همچو انباز داشت",
      "verse_number": 7
    },
    {
      "id": "2066136f-f06e-40f9-8012-2ab6a491c628",
      "m1": "کنون روزگار توام تازه شد",
      "m2": "ترا بودن ایدر بیاندازه شد",
      "verse_number": 8
    },
    {
      "id": "ecb625ed-5d4f-4e82-a2e5-52a7985ec597",
      "m1": "سخن هرچ گویی تو پاسخ دهیم",
      "m2": "وز آواز تو روز فرخ نهیم",
      "verse_number": 9
    },
    {
      "id": "351922c3-7781-47ac-9fa2-a66e10be3286",
      "m1": "فرستادهٔ پیر کرد آفرین",
      "m2": "که بیتو مبادا زمان و زمین",
      "verse_number": 10
    },
    {
      "id": "36ba36b6-a843-4639-8fbc-9e87f46f7ab0",
      "m1": "هران پادشاهی که دارد خرد",
      "m2": "ز گفت خردمند رامش برد",
      "verse_number": 11
    },
    {
      "id": "bd6ffa0b-d685-44dd-ac4e-d98c6bb6b4d5",
      "m1": "به یزدان خردمند نزدیکتر",
      "m2": "بداندیش را روز تاریکتر",
      "verse_number": 12
    },
    {
      "id": "4e2fd2a4-6c19-488a-ab3d-e5cf610f6ba3",
      "m1": "تو بر مهتران جهان مهتری",
      "m2": "که هم مهتر و شاه و هم بهتری",
      "verse_number": 13
    },
    {
      "id": "ac856058-07fd-461c-909d-61d930984f12",
      "m1": "ترا دانش و هوش و دادست و فر",
      "m2": "بر آیین شاهان پیروزگر",
      "verse_number": 14
    },
    {
      "id": "6782ed37-c0eb-44ab-8749-57e4a83d25d9",
      "m1": "همانت خرد هست و پاکیزه رای",
      "m2": "بر هوشمندان توی کدخدای",
      "verse_number": 15
    },
    {
      "id": "4c4fa5d7-7f0a-4116-bda7-22dbc243dc78",
      "m1": "که جاوید بادی تن و جان درست",
      "m2": "مبیناد گردون میان تو سست",
      "verse_number": 16
    },
    {
      "id": "6c5490a6-a4f5-406a-9a21-2250ae2131c8",
      "m1": "زبانت ترازوست و گفتن گهر",
      "m2": "گهر سخته هرگز که بیند به زر",
      "verse_number": 17
    },
    {
      "id": "6745031f-46be-4303-be08-f8603e8b1232",
      "m1": "اگر چه فرستادهٔ قیصرم",
      "m2": "همان چاکر شاه را چاکرم",
      "verse_number": 18
    },
    {
      "id": "31bf12d5-337b-4acb-949f-328acf8dba10",
      "m1": "درودی رسانم ز قیصر به شاه",
      "m2": "که جاوید باد این سر و تاج و گاه",
      "verse_number": 19
    },
    {
      "id": "a6b2e214-d41d-4b2b-b9c4-deaca76ba90c",
      "m1": "و دیگر که فرمود تا هفت چیز",
      "m2": "بپرسم ز دانندگان تو نیز",
      "verse_number": 20
    },
    {
      "id": "00e415a8-8c31-4088-8543-a3ebf7a73440",
      "m1": "بدو گفت شاه این سخنها بگوی",
      "m2": "سخنگوی را بیشتر آبروی",
      "verse_number": 21
    },
    {
      "id": "05c5f1c6-a8e9-440a-912f-e0812b503d65",
      "m1": "بفرمود تا موبد موبدان",
      "m2": "بشد پیش با مهتران و ردان",
      "verse_number": 22
    },
    {
      "id": "91b1ce0f-76d1-4ba3-adf1-94e8bc4b98d7",
      "m1": "بشد موبد و هرکه دانا بدند",
      "m2": "به هر دانشیبر توانا بدند",
      "verse_number": 23
    },
    {
      "id": "b72175f7-dac2-491d-8f5c-5ed9c1b6562b",
      "m1": "سخنگوی بگشاد راز از نهفت",
      "m2": "سخنهای قیصر به موبد بگفت",
      "verse_number": 24
    },
    {
      "id": "31f29f60-de1a-44a6-a287-92d0028217e3",
      "m1": "به موبد چنین گفت کای رهنمون",
      "m2": "چه چیز آنک خوانی همی اندرون",
      "verse_number": 25
    },
    {
      "id": "4681676d-079d-4871-85c1-1810eeab92aa",
      "m1": "دگر آنک بیرونش خوانی همی",
      "m2": "جزین نیز نامش ندانی همی",
      "verse_number": 26
    },
    {
      "id": "ee086342-6f27-4054-a200-d04861d9a03f",
      "m1": "زبر چیست ای مهتر و زیر چیست",
      "m2": "همان بیکرانه چه و خوار کیست",
      "verse_number": 27
    },
    {
      "id": "5d1c48c5-c67f-434e-bfb1-687eab024694",
      "m1": "چه چیز آنک نامش فراوان بود",
      "m2": "مر او را به هر جای فرمان بود",
      "verse_number": 28
    },
    {
      "id": "b5d0abff-ee90-43a3-bb00-edd363d02238",
      "m1": "چنین گفت موبد به فرزانه مرد",
      "m2": "که مشتاب وز راه دانش مگرد",
      "verse_number": 29
    },
    {
      "id": "fc82d144-f8da-4569-8e9a-866053f4875f",
      "m1": "مر این را که گفتی تو پاسخ یکیست",
      "m2": "سخن در درون و برون اندکیست",
      "verse_number": 30
    },
    {
      "id": "5dfcd4fa-c5be-4ebe-ad97-ce431a8fdb6b",
      "m1": "برون آسمان و درونش هواست",
      "m2": "زبر فر یزدان فرمانرواست",
      "verse_number": 31
    },
    {
      "id": "3769b77e-696d-4fd3-90bd-0d26179de773",
      "m1": "همان بیکران در جهان ایزدست",
      "m2": "اگر تاب گیری به دانش بدست",
      "verse_number": 32
    },
    {
      "id": "b2e107ea-1bcb-41ff-a8ac-684da30252c4",
      "m1": "زبر چون بهشتست و دوزخ به زیر",
      "m2": "بد آن را که باشد به یزدان دلیر",
      "verse_number": 33
    },
    {
      "id": "5a3c9bd2-66e0-4934-aaa5-ed6e2bb625b0",
      "m1": "دگر آنک بسیار نامش بود",
      "m2": "رونده به هر جای کامش بود",
      "verse_number": 34
    },
    {
      "id": "46ec4d01-57dd-4df9-850b-01976ef02e26",
      "m1": "خرد دارد ای پیر بسیار نام",
      "m2": "رساند خرد پادشا را به کام",
      "verse_number": 35
    },
    {
      "id": "0491094b-c762-4d23-afd7-894ecb892dbe",
      "m1": "یکی مهر خوانند و دیگر وفا",
      "m2": "خرد دور شد درد ماند و جفا",
      "verse_number": 36
    },
    {
      "id": "fed6c558-e3f0-43de-88c7-d5ff98c63633",
      "m1": "زبانآوری راستی خواندش",
      "m2": "بلنداختری زیرکی داندش",
      "verse_number": 37
    },
    {
      "id": "e04bee40-1567-4b60-a73b-1d9c7945d0c9",
      "m1": "گهی بردبار و گهی رازدار",
      "m2": "که باشد سخن نزد او پایدار",
      "verse_number": 38
    },
    {
      "id": "7c1573ed-f1e6-4fee-9e9c-7dfec54de94c",
      "m1": "پراگنده اینست نام خرد",
      "m2": "از اندازهها نام او بگذرد",
      "verse_number": 39
    },
    {
      "id": "02dae74d-2e32-4027-82cb-a37c3e96690d",
      "m1": "تو چیزی مدان کز خرد برترست",
      "m2": "خرد بر همه نیکویها سرست",
      "verse_number": 40
    },
    {
      "id": "dfde13dd-1cbf-4e7c-9fb4-b2cb6e3e9172",
      "m1": "خرد جوید آگنده راز جهان",
      "m2": "که چشم سر ما نبیند نهان",
      "verse_number": 41
    },
    {
      "id": "592a11b2-5412-4a2b-8084-9264bc1b2f60",
      "m1": "دگر آنک دارد جهاندار خوار",
      "m2": "به هر دانش از کردهٔ کردگار",
      "verse_number": 42
    },
    {
      "id": "d5cfa16d-9a7e-41a1-9cc3-62f7637dc96f",
      "m1": "ستارهست رخشان ز چرخ بلند",
      "m2": "که بینا شمارش بداند که چند",
      "verse_number": 43
    },
    {
      "id": "f5408b03-db87-4027-b782-ee3784ff7b06",
      "m1": "بلند آسمان را که فرسنگ نیست",
      "m2": "کسی را بدو راه و آهنگ نیست",
      "verse_number": 44
    },
    {
      "id": "2d88565a-f1e1-46ad-a062-fa4503d54014",
      "m1": "همی خوار گیری شمار ورا",
      "m2": "همان گردش روزگار ورا",
      "verse_number": 45
    },
    {
      "id": "47494102-c5db-4fe3-96d3-1fc58c427999",
      "m1": "کسی کو ببیند ز پرتاب تیر",
      "m2": "بماند شگفت اندرو تیز ویر",
      "verse_number": 46
    },
    {
      "id": "2c104acd-2437-4630-8ec8-ccd526264646",
      "m1": "ستاره همی بشمرد ز آسمان",
      "m2": "ازین خوارتر چیست ای شادمان",
      "verse_number": 47
    },
    {
      "id": "ea0a9e29-6e09-4791-9bf6-dc658873538e",
      "m1": "من این دانم ار هست پاسخ جزین",
      "m2": "فراخست رای جهانآفرین",
      "verse_number": 48
    },
    {
      "id": "14763814-54e7-4606-9380-43a5a2c74b6e",
      "m1": "سخندان قیصر چو پاسخ شنید",
      "m2": "زمین را ببوسید و فرمان گزید",
      "verse_number": 49
    },
    {
      "id": "6ec2ebc5-cd27-4b28-a605-1c4e2dd6c754",
      "m1": "به بهرام گفت ای جهاندار شاه",
      "m2": "ز یزدان برینبر فزونی مخواه",
      "verse_number": 50
    },
    {
      "id": "b0f5374b-5e62-4652-8602-68a019e20787",
      "m1": "که گیتی سراسر به فرمان تست",
      "m2": "سر سرکشان زیر پیمان تست",
      "verse_number": 51
    },
    {
      "id": "8fbc74fe-cf39-4bf7-8881-994e3d2faed9",
      "m1": "پسند بزرگان فرخنژاد",
      "m2": "ندارد جهان چون تو شاهی به یاد",
      "verse_number": 52
    },
    {
      "id": "77d0f841-ddfa-4ff4-9c28-b89f27933189",
      "m1": "همان نیز دستورت از موبدان",
      "m2": "به دانش فزونست از بخردان",
      "verse_number": 53
    },
    {
      "id": "afa732cb-f468-41ef-9140-4373d6c21115",
      "m1": "همه فیلسوفان ورا بندهاند",
      "m2": "به دانایی او سرافگندهاند",
      "verse_number": 54
    },
    {
      "id": "505d20f7-8a83-41df-9ad6-0944ad81b230",
      "m1": "چو بهرام بشنید شادی نمود",
      "m2": "به دلش اندرون روشنایی فزود",
      "verse_number": 55
    },
    {
      "id": "4a829362-073b-47ce-99ce-7a7751c428fb",
      "m1": "به موبدم درم داد ده بدره نیز",
      "m2": "همان جامه و اسپ و بسیار چیز",
      "verse_number": 56
    },
    {
      "id": "fdc53196-4e47-4204-a9ab-bd8810124839",
      "m1": "وزانجا خرامان بیامد بدر",
      "m2": "خرد یافته موبد پرهنر",
      "verse_number": 57
    },
    {
      "id": "1a13f3aa-4700-4b75-8a84-0f58475adcdb",
      "m1": "فرستادهٔ قیصر نامدار",
      "m2": "سوی خانه رفت از بر شهریار",
      "verse_number": 58
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 58
  },
