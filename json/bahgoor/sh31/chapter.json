{
  "id": "596911e5-ec4c-421d-bc61-5dfe4081e6a0",
  "title": "بخش ۳۱",
  "verses": [
    {
      "id": "bdcf3b4f-632b-4b9e-9e9e-05a823716ebe",
      "m1": "چو بنهاد بر نامهبر مهر شاه",
      "m2": "برآراست بر ساز نخچیرگاه",
      "verse_number": 1
    },
    {
      "id": "c8ab3e6f-5b90-44a7-aa8e-07276918568f",
      "m1": "به لشکر ز کارش کس آگه نبود",
      "m2": "جز از نامدارانش همره نبود",
      "verse_number": 2
    },
    {
      "id": "2c124f6c-4015-491c-929e-ac7aa58ae889",
      "m1": "بیامد بدینسان به هندوستان",
      "m2": "گذشت از بر آب جادوستان",
      "verse_number": 3
    },
    {
      "id": "da77d594-cc97-4a66-93af-aeeb11f9cfa4",
      "m1": "چو نزدیک ایوان شنگل رسید",
      "m2": "در پرده و بارگاهش بدید",
      "verse_number": 4
    },
    {
      "id": "3dc46c7b-4167-4a19-91ce-ea43d23656ea",
      "m1": "برآوردهای بود سر در هوا",
      "m2": "بدربر فراوان سلیح و نوا",
      "verse_number": 5
    },
    {
      "id": "18337e07-283d-4e32-85dc-c545fa97615e",
      "m1": "سواران و پیلان بدربر به پای",
      "m2": "خروشیدن زنگ با کرنای",
      "verse_number": 6
    },
    {
      "id": "fd89fba7-c2db-4303-85bc-38a9e1b0f5c3",
      "m1": "شگفتی بان بارگه بر بماند",
      "m2": "دلش را به اندیشه اندر نشاند",
      "verse_number": 7
    },
    {
      "id": "ace4f9af-edcd-46da-acdf-f8b97a12b36e",
      "m1": "چنین گفت با پردهداران اوی",
      "m2": "پرستنده و پایکاران اوی",
      "verse_number": 8
    },
    {
      "id": "53fdf8e0-fe1e-4191-b489-b1c73e070381",
      "m1": "که از نزد پیروز بهرامشاه",
      "m2": "فرستاده آمد بدین بارگاه",
      "verse_number": 9
    },
    {
      "id": "207e6473-a185-4229-a340-34cc7207d5cc",
      "m1": "هم اندر زمان رفت سالار بار",
      "m2": "ز پرده درون تا بر شهریار",
      "verse_number": 10
    },
    {
      "id": "104093a1-a8ea-4f3a-9b58-d65a45a47d59",
      "m1": "بفرمود تا پرده برداشتند",
      "m2": "به ارجش ز درگاه بگذاشتند",
      "verse_number": 11
    },
    {
      "id": "cdcb5398-1765-4ce2-9422-7084271a9a7f",
      "m1": "خرامان همی رفت بهرام گور",
      "m2": "یکی خانه دید آسمانش بلور",
      "verse_number": 12
    },
    {
      "id": "f678dafc-9b1d-4c99-897d-609656985c79",
      "m1": "ازارش همه سیم و پیکرش زر",
      "m2": "نشانده به هر جای چندی گهر",
      "verse_number": 13
    },
    {
      "id": "9131e921-3668-4827-90de-0c52f11e45b5",
      "m1": "نشسته به نزدیک او رهنمای",
      "m2": "پس پشت او ایستاده به پای",
      "verse_number": 14
    },
    {
      "id": "4895e16c-3708-40be-a2a2-5413b3515452",
      "m1": "برادرش را دید بر زیرگاه",
      "m2": "نهاده به سر بر ز گوهر کلاه",
      "verse_number": 15
    },
    {
      "id": "d534f746-8ba7-48d0-8f10-f6fcf6d00663",
      "m1": "چو آمد به نزدیک شنگل فراز",
      "m2": "ورا دید با تاج بر تخت ناز",
      "verse_number": 16
    },
    {
      "id": "22b925d8-4393-46bf-9ff6-c5b8ac5d42b1",
      "m1": "همه پایهٔ تخت زر و بلور",
      "m2": "نشسته برو شاه با فر و زور",
      "verse_number": 17
    },
    {
      "id": "87e747d2-e2a5-4e68-849e-7f53e52022e6",
      "m1": "بر تخت شد شاه و بردش نماز",
      "m2": "همی بود پیشش زمانی دراز",
      "verse_number": 18
    },
    {
      "id": "60c5dac9-b95e-4049-8c0f-915ddc85da69",
      "m1": "چنین گفت زان کو ز شاهان مهست",
      "m2": "جهاندار بهرام یزدانپرست",
      "verse_number": 19
    },
    {
      "id": "3bbbea86-e0ab-44b3-a400-ca0668112874",
      "m1": "یکی نامه دارم بر شاه هند",
      "m2": "نوشته خطی پهلوی بر پرند",
      "verse_number": 20
    },
    {
      "id": "3baf4fda-27ef-4b60-a98d-b907cb03db86",
      "m1": "چو آواز بهرام بشنید شاه",
      "m2": "بفرمود زرین یکی زیرگاه",
      "verse_number": 21
    },
    {
      "id": "f3b1c29c-719f-4357-8902-8097a0bd8a08",
      "m1": "بران کرسی زرش بنشاندند",
      "m2": "ز درگاه یارانش را خواندند",
      "verse_number": 22
    },
    {
      "id": "05a732a4-7c8d-4b8e-a4c0-6012b1e4b7a3",
      "m1": "چو بنشست بگشاد لب را ز بند",
      "m2": "چنین گفت کای شهریار بلند",
      "verse_number": 23
    },
    {
      "id": "2fec9476-49b8-420c-9248-15f3183b4ff9",
      "m1": "زبان برگشایم چو فرمان دهی",
      "m2": "که بیتو مبادا بهی و مهی",
      "verse_number": 24
    },
    {
      "id": "ecac798e-d1c3-4d9f-9df3-f688e95ec730",
      "m1": "بدو گفت شنگل که بر گوی هین",
      "m2": "که گوینده یابد ز چرخ آفرین",
      "verse_number": 25
    },
    {
      "id": "b93059c2-25b8-4afe-9852-896676498071",
      "m1": "چنین گفت کز شاه خسرونژاد",
      "m2": "که چون او به گیتی ز مادر نزاد",
      "verse_number": 26
    },
    {
      "id": "9615fb92-35ea-432e-89d9-f94c6f28e553",
      "m1": "مهست آن سرافراز بر روی دهر",
      "m2": "که با داد او زهر شد پای زهر",
      "verse_number": 27
    },
    {
      "id": "51e0a1be-7637-452d-b364-8fedbc27c5e7",
      "m1": "بزرگان همه باژ دار ویاند",
      "m2": "به نخچیر شیران شکار ویاند",
      "verse_number": 28
    },
    {
      "id": "c16aaf0d-fae6-4e74-ab99-b8c826acd046",
      "m1": "چو شمشیر خواهد به رزم اندرون",
      "m2": "بیابان شود همچو دریای خون",
      "verse_number": 29
    },
    {
      "id": "22d3c2ba-20ff-4c70-a4d5-0a45de9e99b9",
      "m1": "به بخشش چو ابری بود دربار",
      "m2": "بود پیش او گنج دینار خوار",
      "verse_number": 30
    },
    {
      "id": "ea6aedb0-54d1-4ba9-8d08-26617942bc4e",
      "m1": "پیامی رسانم سوی شاه هند",
      "m2": "همان پهلوی نامهای برپرند",
      "verse_number": 31
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 31
  }
}