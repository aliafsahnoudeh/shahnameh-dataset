{
  "id": "6f906c89-8271-4206-9f71-fd46161170a1",
  "title": "بخش ۲۴",
  "verses": [
    {
      "id": "da6b4590-3016-4e66-86b0-ad72d1f86986",
      "m1": "چو شد ساخته کار آتشکده",
      "m2": "همان جای نوروز و جشن سده",
      "verse_number": 1
    },
    {
      "id": "17df3a32-6103-476e-bff2-7888d131f66a",
      "m1": "بیامد سوی آذرآبادگان",
      "m2": "خود و نامداران و آزادگان",
      "verse_number": 2
    },
    {
      "id": "f0743db4-fd7e-444c-aaba-e041768e995a",
      "m1": "پرستندگان پیش آذر شدند",
      "m2": "همه موبدان دست بر سر شدند",
      "verse_number": 3
    },
    {
      "id": "138648ce-f225-4ae7-8bc3-c1311add69ac",
      "m1": "پرستندگان را ببخشید چیز",
      "m2": "وز آتشکده روی بنهاد تیز",
      "verse_number": 4
    },
    {
      "id": "27b3a5a8-b1c1-445b-84a0-48a07ee3ce6d",
      "m1": "خرامان بیامد به شهر صطخر",
      "m2": "که شاهنشهان را بدان بود فخر",
      "verse_number": 5
    },
    {
      "id": "996da297-85b8-4057-abaf-e280ad9d0508",
      "m1": "پراگنده از چرم گاوان میش",
      "m2": "که بر پشت پیلان همی راند پیش",
      "verse_number": 6
    },
    {
      "id": "3440c120-f2eb-4087-811c-205f33e6ff4a",
      "m1": "هزار و صد و شست قنطار بود",
      "m2": "درم بو ازو نیز و دینار بود",
      "verse_number": 7
    },
    {
      "id": "f0ef3532-1b9d-4dcf-82b2-323408a4624d",
      "m1": "که بر پهلوی موبد پارسی",
      "m2": "همی نام بردیش پیداوسی",
      "verse_number": 8
    },
    {
      "id": "45ad79fa-ec33-4b5d-aa88-144907a48f47",
      "m1": "بیاورد پس مشکهای ادیم",
      "m2": "بگسترد و شادان برو ریخت سیم",
      "verse_number": 9
    },
    {
      "id": "dac14a02-5b4c-42ed-af9a-52aca2e4a012",
      "m1": "به ره بر هران پل که ویران بدید",
      "m2": "رباطی که از کاروانان شنید",
      "verse_number": 10
    },
    {
      "id": "285cdf11-c7e7-4ff6-8930-a7cfeb0eb218",
      "m1": "ز گیتی دگر هرکه درویش بود",
      "m2": "وگر نانش از کوشش خویش بود",
      "verse_number": 11
    },
    {
      "id": "a9b88851-6c79-4278-9a2f-c50f423704f1",
      "m1": "سدیگر به کپان بسختید سیم",
      "m2": "زن بیوه و کودکان یتیم",
      "verse_number": 12
    },
    {
      "id": "56453735-4078-45ea-8a48-6f7bfb60306b",
      "m1": "چهارم هران پیر کز کارکرد",
      "m2": "فروماند وز روز ننگ و نبرد",
      "verse_number": 13
    },
    {
      "id": "e39c84ba-f727-4f8a-b487-17c88dcd829d",
      "m1": "به پنجم هرانکس که بد با نژاد",
      "m2": "توانگر نکردی ازو هیچ یاد",
      "verse_number": 14
    },
    {
      "id": "61139453-d406-4048-b481-9ec3d4345665",
      "m1": "ششم هرکه آمد ز راه دراز",
      "m2": "همی داشت درویشی خویش راز",
      "verse_number": 15
    },
    {
      "id": "a673cd8c-a168-4708-ab59-f4286ac9a27c",
      "m1": "بدیشان ببخشید چندین درم",
      "m2": "نبد شاه روزی ز بخشش دژم",
      "verse_number": 16
    },
    {
      "id": "312d645b-a36c-4383-959e-f202f545c336",
      "m1": "غنیمت همه بهر لشکر نهاد",
      "m2": "نیامدش از آگندن گنج باد",
      "verse_number": 17
    },
    {
      "id": "617f6f3b-e75d-4ab4-8e7e-0639f2755fac",
      "m1": "بفرمود پس تاج خاقان چین",
      "m2": "که پیش آورد مردم پاکدین",
      "verse_number": 18
    },
    {
      "id": "a8d03342-5997-47fe-8262-e65ddbc913e9",
      "m1": "گهرها که بود اندرو آژده",
      "m2": "بکندند و دیوار آتشکده",
      "verse_number": 19
    },
    {
      "id": "77187d00-6534-4d4c-8aa7-ae09ba18f5ec",
      "m1": "به زر و به گوهر بیاراستند",
      "m2": "سر تخت آذر بپیراستند",
      "verse_number": 20
    },
    {
      "id": "858d6541-6c9a-4679-82f1-63780b3aec69",
      "m1": "وزان جایگه شد سوی طیسفون",
      "m2": "که نرسی بد و موبد رهنمون",
      "verse_number": 21
    },
    {
      "id": "07d8796b-b51f-4fe5-963b-137e1229fbb0",
      "m1": "پذیره شدندش همه مهتران",
      "m2": "بزرگان ایران و کنداوران",
      "verse_number": 22
    },
    {
      "id": "d8eba3fa-abf4-4112-840b-f8778770d479",
      "m1": "چو نرسی بدید آن سر و تاج شاه",
      "m2": "درفش دلفروز و چندان سپاه",
      "verse_number": 23
    },
    {
      "id": "c14c14fa-8153-4e4d-9a1f-f26ab536c0d7",
      "m1": "پیاده شد و برد پیشش نماز",
      "m2": "بزرگان و هم موبد سرفراز",
      "verse_number": 24
    },
    {
      "id": "cab553b7-4de3-4236-9802-1ee4a83a696b",
      "m1": "بفرمود بهرام تا برنشست",
      "m2": "گرفت آن زمان دست او را به دست",
      "verse_number": 25
    },
    {
      "id": "5a1cce9c-f12f-4d8a-9b48-92398a7a8ca8",
      "m1": "بیامد نشست از بر تخت زر",
      "m2": "بزرگان به پیش اندرون با کمر",
      "verse_number": 26
    },
    {
      "id": "e108e43b-6ef9-4ad1-8637-ba0b7dfd4ec5",
      "m1": "ببخشید گنجی به مرد نیاز",
      "m2": "در تنگ زندان گشادند باز",
      "verse_number": 27
    },
    {
      "id": "9c461e67-555b-4e81-ba71-f3ad836d2805",
      "m1": "زمانه پر از رامش و داد شد",
      "m2": "دل غمگنان از غم آزاد شد",
      "verse_number": 28
    },
    {
      "id": "28426124-c62f-481a-825d-4c2e11582b8a",
      "m1": "ز هر کشوری رنج و غم دور کرد",
      "m2": "ز بهر بزرگان یکی سور کرد",
      "verse_number": 29
    },
    {
      "id": "4b257070-a198-4abe-8154-4d82340ca3db",
      "m1": "بدان سور هرکس که بشتافتی",
      "m2": "همه خلعت مهتری یافتی",
      "verse_number": 30
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 30
  },
  "order_in_parent": 24
}