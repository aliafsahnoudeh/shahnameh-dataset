{
  "id": "05e9f35e-90f0-470c-8b62-906b19fb31ef",
  "title": "بخش ۴۰",
  "verses": [
    {
      "id": "7119a30d-c4a8-4aa8-b0a8-67e38243cbbb",
      "m1": "سواری ز قنوج تازان برفت",
      "m2": "به آگاهی رفتن شاه تفت",
      "verse_number": 1
    },
    {
      "id": "199fb9db-4621-40b1-97a0-84486561cef0",
      "m1": "که برزوی و ایرانیان رفتهاند",
      "m2": "همان دختر شاه را بردهاند",
      "verse_number": 2
    },
    {
      "id": "fbd3803c-6aba-4f9f-a208-62c5a5bd3c32",
      "m1": "شنید این سخن شنگل از نیکخواه",
      "m2": "چو آتش بیامد ز نخچیرگاه",
      "verse_number": 3
    },
    {
      "id": "3ce8bce3-50a6-4efc-8b44-f86fd8728449",
      "m1": "همه لشکر خویش را برنشاند",
      "m2": "پس شاه بهرام لشکر براند",
      "verse_number": 4
    },
    {
      "id": "2dd92c1d-fbcf-4a84-b141-5d56fbea67bb",
      "m1": "بدینگونه تا پیش دریا رسید",
      "m2": "سپینود و بهرام یل را بدید",
      "verse_number": 5
    },
    {
      "id": "80e2e9f7-c0cb-471d-8151-72b8996e73c6",
      "m1": "غمی گشت و بگذاشت دریا به خشم",
      "m2": "ازان سوی دریا چو بر کرد چشم",
      "verse_number": 6
    },
    {
      "id": "159f96dd-e27f-45d4-8949-1741be3256a6",
      "m1": "بدیدش سپینود و بهرام را",
      "m2": "مران مرد بیباک خودکام را",
      "verse_number": 7
    },
    {
      "id": "b5ffbd85-56ea-4d54-8b27-3cffff2c5ef0",
      "m1": "به دختر چنین گفت کای بدنژاد",
      "m2": "که چون تو ز تخم بزرگان مباد",
      "verse_number": 8
    },
    {
      "id": "504fa918-5504-456c-a385-32ad423f9f14",
      "m1": "تو با این فریبنده مرد دلیر",
      "m2": "ز دریا گذشتی به کردار شیر",
      "verse_number": 9
    },
    {
      "id": "b030e1fb-9064-492b-b283-9eb053b18a1a",
      "m1": "که بیآگهی من به ایران شوی",
      "m2": "ز مینوی خرم به ویران شوی",
      "verse_number": 10
    },
    {
      "id": "f36f7618-9fbc-41a9-91e3-3765c8da104e",
      "m1": "ببینی کنون زخم ژوپین من",
      "m2": "چو ناگاه رفتی ز بالین من",
      "verse_number": 11
    },
    {
      "id": "cb60dbfd-d8f7-43f9-a897-9c1bdc8144c1",
      "m1": "بدو گفت بهرام کای بدنشان",
      "m2": "چرا تاختی باره چون بیهشان",
      "verse_number": 12
    },
    {
      "id": "53622f20-7c77-44f2-988e-2d412792a756",
      "m1": "مرا آزمودی گه کارزار",
      "m2": "چنانم که با باده و میگسار",
      "verse_number": 13
    },
    {
      "id": "b6874dca-ae13-435d-8834-9c25ed97ea81",
      "m1": "تو دانی که از هندوان صدهزار",
      "m2": "بود پیش من کمتر از یک سوار",
      "verse_number": 14
    },
    {
      "id": "edf64705-8518-41c5-ad3b-287a5b50f6f9",
      "m1": "چو من باشم و نامور یار سی",
      "m2": "زرهدار با خنجر پارسی",
      "verse_number": 15
    },
    {
      "id": "188bd975-0e9f-4d2d-b566-3053dde43d1a",
      "m1": "پر از خون کنم کشور هندوان",
      "m2": "نمانم که باشد کسی با روان",
      "verse_number": 16
    },
    {
      "id": "047ec14e-cd3c-4ef5-8b82-64f5dcbca84e",
      "m1": "بدانست شنگل که او راست گفت",
      "m2": "دلیری و گردی نشاید نهفت",
      "verse_number": 17
    },
    {
      "id": "a38020bf-0929-4c49-af59-3ae88d7c8a61",
      "m1": "بدو گفت شنگل که فرزند را",
      "m2": "بیفگندم و خویش و پیوند را",
      "verse_number": 18
    },
    {
      "id": "08bf4f7d-55dd-4c73-90cb-5b6982190fa7",
      "m1": "ز دیده گرامیترت داشتم",
      "m2": "به سر بر همی افسرت داشتم",
      "verse_number": 19
    },
    {
      "id": "c7ddb854-f771-4625-87fd-c0243548dfd2",
      "m1": "ترا دادم آن را که خود خواستی",
      "m2": "مرا راستی بد ترا کاستی",
      "verse_number": 20
    },
    {
      "id": "529a698c-afa6-4a2b-993f-033032e82315",
      "m1": "جفا برگزیدی به جای وفا",
      "m2": "وفا را جفا کی پسندی سزا",
      "verse_number": 21
    },
    {
      "id": "46c46625-0742-4080-9cbe-41287dfb1a9a",
      "m1": "چه گویم تراکانک فرزند بود",
      "m2": "به اندیشهٔ من خردمند بود",
      "verse_number": 22
    },
    {
      "id": "5a343af4-29c7-4336-a9a1-26f33a4a8ddb",
      "m1": "کنون چون دلاور سواری شدست",
      "m2": "گمانم که او شهریاری شدست",
      "verse_number": 23
    },
    {
      "id": "741c3fcc-b1b8-4408-be89-d3f0e485b984",
      "m1": "دل پارسی باوفا کی بود",
      "m2": "چو آری کند رای او نی بود",
      "verse_number": 24
    },
    {
      "id": "8143ebfb-0ed0-498f-ae69-1ca7a977c2b1",
      "m1": "چنان بچهٔ شیر بودی درست",
      "m2": "که از خون دل دایگانش بشست",
      "verse_number": 25
    },
    {
      "id": "f63c7b75-27a8-4c75-ae47-017e63d53474",
      "m1": "چو دندان برآورد و شد تیز چنگ",
      "m2": "به پروردگار آمدش رای جنگ",
      "verse_number": 26
    },
    {
      "id": "17399d3f-60d9-44a4-90c1-c15a1e7e01dd",
      "m1": "بدو گفت بهرام چون دانیم",
      "m2": "بداندیش و بدساز چون خوانیم",
      "verse_number": 27
    },
    {
      "id": "c9c604b3-e6fd-4606-b1e6-8df91b690e01",
      "m1": "به رفتن نباشد مرا سرزنش",
      "m2": "نخواهی مرا بددل و بدکنش",
      "verse_number": 28
    },
    {
      "id": "ce9bb782-1848-4835-834d-5d07e88b58df",
      "m1": "شهنشاه ایران و توران منم",
      "m2": "سپهدار و پشت دلیران منم",
      "verse_number": 29
    },
    {
      "id": "144a632a-e970-4a4a-b39e-06cced562073",
      "m1": "ازین پس سزای تو نیکی کنم",
      "m2": "سر بدسگالت ز تن برکنم",
      "verse_number": 30
    },
    {
      "id": "73889225-64ed-4ca1-b220-abed9076d3f4",
      "m1": "به ایران به جای پدر دارمت",
      "m2": "هم از باژ کشور نیازارمت",
      "verse_number": 31
    },
    {
      "id": "8ffff211-87a4-4794-ac7f-9eff5fa02129",
      "m1": "همان دخترت شمع خاور بود",
      "m2": "سر بانوان را چو افسر بود",
      "verse_number": 32
    },
    {
      "id": "0075d79e-dfba-48d5-bf39-f3dff7c9df3b",
      "m1": "ز گفتار او ماند شنگل شگفت",
      "m2": "ز سر شارهٔ هندوی برگرفت",
      "verse_number": 33
    },
    {
      "id": "e58b4264-adc4-43af-9a2a-1e6c646e7cb5",
      "m1": "بزد اسپ وز پیش چندان سپاه",
      "m2": "بیامد به پوزش به نزدیک شاه",
      "verse_number": 34
    },
    {
      "id": "27436663-b960-4ef9-9eeb-f3a4b8292029",
      "m1": "شهنشاه را شاد در بر گرفت",
      "m2": "وزان گفتها پوزش اندر گرفت",
      "verse_number": 35
    },
    {
      "id": "b6b96333-a4cd-40ce-9192-07f2fa2ceda4",
      "m1": "به دیدار بهرام شد شادکام",
      "m2": "بیاراست خوان و بیاورد جام",
      "verse_number": 36
    },
    {
      "id": "587f1289-10a1-4833-8332-d403b0c4990a",
      "m1": "برآورد بهرام راز از نهفت",
      "m2": "سخنهای ایرانیان باز گفت",
      "verse_number": 37
    },
    {
      "id": "57c69699-52db-49d1-8c73-c1d120973f8e",
      "m1": "که کردار چون بود و اندیشه چون",
      "m2": "که بودم بدین داستان رهنمون",
      "verse_number": 38
    },
    {
      "id": "1b77faa0-5a28-42e4-8eee-8fe62a7dc4e0",
      "m1": "می چند خوردند و برخاستند",
      "m2": "زبان را به پوزش بیاراستند",
      "verse_number": 39
    },
    {
      "id": "f5e7b91e-5a5c-4e55-946c-f5c876460551",
      "m1": "دو شاه دلارای یزدانپرست",
      "m2": "وفا را بسودند بر دست دست",
      "verse_number": 40
    },
    {
      "id": "e20b71d8-0e34-4f5a-a1a8-5843e6a3de8a",
      "m1": "کزین پس دل از راستی نشکنیم",
      "m2": "همی بیخ کژی ز بن برکنیم",
      "verse_number": 41
    },
    {
      "id": "1f433eed-5e93-4ee5-a92e-f1568f944a20",
      "m1": "وفادار باشیم تا جاودان",
      "m2": "سخن بشنویم از لب بخردان",
      "verse_number": 42
    },
    {
      "id": "fde86459-9314-47e4-90b8-bc55c88ccfb6",
      "m1": "سپینود را نیز پدرود کرد",
      "m2": "بر خویش تار و برش پود کرد",
      "verse_number": 43
    },
    {
      "id": "8f030c08-c8a5-4bb8-b7b6-0e32bbc0e412",
      "m1": "سبک پشت بر یکدگر گاشتند",
      "m2": "دل کینه بر جای بگذاشتند",
      "verse_number": 44
    },
    {
      "id": "7afcca66-a988-4b6d-990b-fd90be9f24b9",
      "m1": "یکی سوی خشک و یکی سوی آب",
      "m2": "برفتند شاداندل و پرشتاب",
      "verse_number": 45
    }
  ],
  "poem_info": {
