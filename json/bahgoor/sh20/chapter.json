{
  "id": "15927a3b-c535-4588-afaf-2bb8ba464c0a",
  "title": "بخش ۲۰",
  "verses": [
    {
      "id": "652623f6-c5d6-4c6c-9508-22ef28d17c96",
      "m1": "برینگونه یک چند گیتی بخورد",
      "m2": "به رزم و به بزم و به ننگ و نبرد",
      "verse_number": 1
    },
    {
      "id": "5285a5c6-47be-4a08-96d3-ff419d9b3afa",
      "m1": "پس آگاهی آمد به هند و به روم",
      "m2": "به ترک و به چین و به آباد بوم",
      "verse_number": 2
    },
    {
      "id": "f307a48d-d5b0-40f5-87c7-e093ad1da0fd",
      "m1": "که بهرام را دل به بازیست بس",
      "m2": "کسی را ز گیتی ندارد به کس",
      "verse_number": 3
    },
    {
      "id": "761ae3c1-8e99-46a6-8fe3-fe7f7ad26231",
      "m1": "طلایه نه و دیدهبان نیز نه",
      "m2": "به مرز اندرون پهلوان نیز نه",
      "verse_number": 4
    },
    {
      "id": "6680d52d-0e4c-4ee7-9fb1-8f8767b03586",
      "m1": "به بازی همی بگذارند جهان",
      "m2": "نداند همی آشکار و نهان",
      "verse_number": 5
    },
    {
      "id": "51b8da8f-6253-4c00-89c8-679c95db23cd",
      "m1": "چو خاقان چین این سخنها شنید",
      "m2": "ز چین و ختن لشکری برگزید",
      "verse_number": 6
    },
    {
      "id": "52a52f18-e190-4874-9f2d-492f2142abc1",
      "m1": "درم داد و سر سوی ایران نهاد",
      "m2": "کسی را نیامد ز بهرام یاد",
      "verse_number": 7
    },
    {
      "id": "58737c5e-24df-4fb4-8017-478f898c9226",
      "m1": "وزان سوی قیصر سپه برگرفت",
      "m2": "همه کشور روم لشگر گرفت",
      "verse_number": 8
    },
    {
      "id": "9dea2369-d930-40ca-91ad-9bdf49cb523f",
      "m1": "به ایران چو آگاهی آمد ز روم",
      "m2": "ز هند و ز چین و ز آباد بوم",
      "verse_number": 9
    },
    {
      "id": "ed669a28-1ce3-4bed-a729-7cf200dabbcf",
      "m1": "که قیصر سپه کرد و لشکر کشید",
      "m2": "ز چین و ختن لشکر آمد پدید",
      "verse_number": 10
    },
    {
      "id": "ab8c8fe4-07f2-47b3-b033-c63fd9d1efc9",
      "m1": "به ایران هرانکس که بد پیشرو",
      "m2": "ز پیران و از نامداران نو",
      "verse_number": 11
    },
    {
      "id": "0291579e-c792-4695-8c4d-272cd2020e2e",
      "m1": "همه پیش بهرام گور آمدند",
      "m2": "پر از خشم و پیکار و شور آمدند",
      "verse_number": 12
    },
    {
      "id": "c0c05165-d79b-4a68-9ef0-4af7a17712d9",
      "m1": "بگفتند با شاه چندی درشت",
      "m2": "که بخت فروزانت بنمود پشت",
      "verse_number": 13
    },
    {
      "id": "224080f4-ba0e-4f36-b1e6-cde6135cfce0",
      "m1": "سر رزمجویان به رزم اندرست",
      "m2": "ترا دل به بازی و بزم اندرست",
      "verse_number": 14
    },
    {
      "id": "67128a57-9a0b-4ffb-a1d2-328ee159d4e6",
      "m1": "به چشم تو خوارست گنج و سپاه",
      "m2": "همان تاج ایران و هم تخت و گاه",
      "verse_number": 15
    },
    {
      "id": "98cf3653-71b3-444e-b327-df46b72c5d0e",
      "m1": "چنین داد پاسخ جهاندار شاه",
      "m2": "بدان موبدان نماینده راه",
      "verse_number": 16
    },
    {
      "id": "abb22072-f7b7-4540-b3c9-75078cbae4e4",
      "m1": "که دادار گیهان مرا یاورست",
      "m2": "که از دانش برتران برترست",
      "verse_number": 17
    },
    {
      "id": "30034f28-7bf2-4dac-964f-3bc127f5d645",
      "m1": "به نیروی آن پادشاه بزرگ",
      "m2": "که ایران نگه دارم از چنگ گرگ",
      "verse_number": 18
    },
    {
      "id": "f311200c-2f33-4f92-84eb-63fd691f6603",
      "m1": "به بخت و سپاه و به شمشیر و گنج",
      "m2": "ز کشور بگردانم این درد و رنج",
      "verse_number": 19
    },
    {
      "id": "4f4aba0c-93bc-42ac-83b1-ac56b82d122f",
      "m1": "همی کرد بازی بدان همنشان",
      "m2": "وزو پر ز خون دیدهٔ سرکشان",
      "verse_number": 20
    },
    {
      "id": "6138320e-26e8-4f75-af84-452008995a17",
      "m1": "همی گفت هرکس کزین پادشا",
      "m2": "بپیچد دل مردم پارسا",
      "verse_number": 21
    },
    {
      "id": "b4d3156c-0e36-48d5-948c-2ca3f88be350",
      "m1": "دل شاه بهرام بیدار بود",
      "m2": "ازین آگهی پر ز تیمار بود",
      "verse_number": 22
    },
    {
      "id": "b7140428-1315-4cb6-8e3b-c81914219bff",
      "m1": "همی ساختی کار لشکر نهان",
      "m2": "ندانست رازش کس اندر جهان",
      "verse_number": 23
    },
    {
      "id": "f6e8e717-4b28-4c87-b242-46ccc7d8da99",
      "m1": "همه شهر ایران ز کارش به بیم",
      "m2": "از اندیشگان دل شده به دو نیم",
      "verse_number": 24
    },
    {
      "id": "900409dd-0bb2-4f56-a1a3-e69a6f8d95b8",
      "m1": "همه گشته نومید زان شهریار",
      "m2": "تن و کدخدایی گرفتند خوار",
      "verse_number": 25
    },
    {
      "id": "e25c233a-bc47-4d77-97d4-64c0cebee892",
      "m1": "پس آگاهی آمد به بهرامشاه",
      "m2": "که آمد ز چین اندر ایران سپاه",
      "verse_number": 26
    },
    {
      "id": "3d7404a3-9e98-4478-a98f-d400be187fec",
      "m1": "جهاندار گستهم را پیش خواند",
      "m2": "ز خاقان چین چند با او براند",
      "verse_number": 27
    },
    {
      "id": "eb8d31cc-b29a-4004-8158-b88caf7aff98",
      "m1": "کجا پهلوان بود و دستور بود",
      "m2": "چو رزم آمدی پیش رنجور بود",
      "verse_number": 28
    },
    {
      "id": "b6a66051-815e-489b-9f46-c867a39f30d1",
      "m1": "دگر مهرپیروز به زاد را",
      "m2": "سوم مهربرزین خراد را",
      "verse_number": 29
    },
    {
      "id": "81a1395d-c749-45d0-bf32-6d1ae706dca7",
      "m1": "چو بهرام پیروز بهرامیان",
      "m2": "خزروان رهام با اندیان",
      "verse_number": 30
    },
    {
      "id": "aea1cabb-f30d-4258-bd6f-acf2f896bc67",
      "m1": "یکی شاه گیلان یکی شاه ری",
      "m2": "که بودند در رای هشیار پی",
      "verse_number": 31
    },
    {
      "id": "72d05939-7352-477d-8fd7-a3eb47fda1ce",
      "m1": "دگر داد برزین رزمآزمای",
      "m2": "کجا زاولستان بدو بد به پای",
      "verse_number": 32
    },
    {
      "id": "f470fa78-f35d-4681-9557-54a2416f58b8",
      "m1": "بیاورد چون قارن برزمهر",
      "m2": "دگر دادبرزین آژنگ چهر",
      "verse_number": 33
    },
    {
      "id": "733cc417-6e06-4c01-847a-4a8ea548ceb1",
      "m1": "گزین کرد ز ایرانیان سیهزار",
      "m2": "خردمند و شایستهٔ کارزار",
      "verse_number": 34
    },
    {
      "id": "31cc0884-8fd7-45b5-974c-d6cf01800b75",
      "m1": "برادرش را داد تخت و کلاه",
      "m2": "که تا گنج و لشکر بدارد نگاه",
      "verse_number": 35
    },
    {
      "id": "e36a262e-c3f7-4732-9781-6925aeda6361",
      "m1": "خردمند نرسی آزاد چهر",
      "m2": "همش فر و دین بود هم داد و مهر",
      "verse_number": 36
    },
    {
      "id": "d10c8f70-ab52-458f-ab19-6c72ea7d86c5",
      "m1": "وزان جایگه لشکر اندر کشید",
      "m2": "سوی آذرآبادگان پرکشید",
      "verse_number": 37
    },
    {
      "id": "e528b628-0f8f-4bc1-a98c-f07b6011b573",
      "m1": "چو از پارس لشکر فراوان ببرد",
      "m2": "چنین بود رای بزرگان و خرد",
      "verse_number": 38
    },
    {
      "id": "66286ec4-935b-47e1-9686-c321f82fe5ab",
      "m1": "که از جنگ بگریخت بهرامشاه",
      "m2": "وزان سوی آذر کشیدست راه",
      "verse_number": 39
    },
    {
      "id": "82822b0d-3f61-418d-b824-03e0fd8c8a1b",
      "m1": "چو بهرام رخ سوی دریا نهاد",
      "m2": "رسولی ز قیصر بیامد چو باد",
      "verse_number": 40
    },
    {
      "id": "4c13e323-cfe3-4a02-9b59-050ec8d81f36",
      "m1": "به کاخیش نرسی فرود آورید",
      "m2": "گرانمایه جایی چنانچون سزید",
      "verse_number": 41
    },
    {
      "id": "8a02e232-e8e0-4913-b0d8-9d12b19374fa",
      "m1": "نشستند با رایزن بخردان",
      "m2": "به نزدیک نرسی همه موبدان",
      "verse_number": 42
    },
    {
      "id": "89300e97-e92a-4d20-ace9-419576403357",
      "m1": "سراسر سخنشان بد از شهریار",
      "m2": "که داد او به باد آن همه روزگار",
      "verse_number": 43
    },
    {
      "id": "ed3321f8-9e96-4e18-97e9-2221eff53f5d",
      "m1": "سوی موبدان موبد آمد سپاه",
      "m2": "به آگاه بودن ز بهرامشاه",
      "verse_number": 44
    },
    {
      "id": "d24d490e-7a42-4a6b-a876-c4f7d22f2a1b",
      "m1": "که بر ما همی رنج بپراگند",
      "m2": "چرا هم ز لشکر نه گنج آگند",
      "verse_number": 45
    },
    {
      "id": "2e0d4932-0939-4315-a7c9-870a422f1a09",
      "m1": "به هرجای زر برفشاند همی",
      "m2": "هم ارج جوانی نداند همی",
      "verse_number": 46
    },
    {
      "id": "f35c8b11-fd7e-48e5-b661-7024e5bba047",
      "m1": "پراگنده شد شهری و لشکری",
      "m2": "همی جست هرکس ره مهتری",
      "verse_number": 47
    },
    {
      "id": "8752668c-c61a-4e6c-a967-8a46e3151791",
      "m1": "کنون زو نداریم ما آگهی",
      "m2": "بما بازگردد بدی ار بهی",
      "verse_number": 48
    },
    {
      "id": "7ed63e23-7a69-4b2f-a29e-e5cf58b904a5",
      "m1": "ازان پس چو گفتارها شد کهن",
      "m2": "برین بر نهادند یکسر سخن",
      "verse_number": 49
    },
    {
      "id": "ab58e10a-b29e-4848-9121-0887edbcaed9",
      "m1": "کز ایران یکی مرد با آفرین",
      "m2": "فرستند نزدیک خاقان چین",
      "verse_number": 50
    },
    {
      "id": "06017bfe-691e-4bda-bed2-7ee360c88b37",
      "m1": "که بنشین ازین غارت و تاختن",
      "m2": "ز هرگونه باید برانداختن",
      "verse_number": 51
    },
    {
      "id": "de82d923-2640-4630-89b6-bb3f1952b446",
      "m1": "مگر بوم ایران بماند به جای",
      "m2": "چو از خانه آواره شد کدخدای",
      "verse_number": 52
    },
    {
      "id": "9424d08c-3b0a-4165-b4be-97e69135ef99",
      "m1": "چنین گفت نرسی که این روی نیست",
      "m2": "مر این آب را در جهان جوی نیست",
      "verse_number": 53
    },
    {
      "id": "13dd2e92-0319-4e9b-b7ba-ea134e462428",
      "m1": "سلیحست و گنجست و مردان مرد",
      "m2": "کز آتش به خنجر برآرند گرد",
      "verse_number": 54
    },
    {
      "id": "5cd1245c-3baf-426a-b30e-6f6b01e26f6f",
      "m1": "چو نومیدی آمد ز بهرامشاه",
      "m2": "کجا رفت با خوارمایه سپاه",
      "verse_number": 55
    },
    {
      "id": "b74203e0-a619-40b0-b2a7-4338782cd859",
      "m1": "گر اندیشهٔ بد کنی بد رسد",
      "m2": "چه باید به شاهان چنین گشت بد",
      "verse_number": 56
    },
    {
      "id": "655bb1cb-9b58-44e4-8b94-0298afe49b41",
      "m1": "شنیدند ایرانیان این سخن",
      "m2": "یکی پاسخ کژ فگندند بن",
      "verse_number": 57
    },
    {
      "id": "81177c5c-152e-4e0e-a167-ff8756383693",
      "m1": "که بهرام ز ایدر سپاهی ببرد",
      "m2": "که ما را به غم دل بباید سپرد",
      "verse_number": 58
    },
    {
      "id": "96d7c334-9089-4643-9359-53d3b0d6d880",
      "m1": "چو خاقان بیاید به ایران به جنگ",
      "m2": "نماند برین بوم ما بوی و رنگ",
      "verse_number": 59
    },
    {
      "id": "11f622cf-a446-403b-82c8-52d9ca4fe48c",
      "m1": "سپاهی و نرسی نماند به جای",
      "m2": "بکوبند بر خیره ما را به پای",
      "verse_number": 60
    },
    {
      "id": "da3b7271-9763-422a-a09b-0cea40ea82a9",
      "m1": "یکی چاره سازیم تا جای ما",
      "m2": "بماند ز تن نگسلد پای ما",
      "verse_number": 61
    },
    {
      "id": "2e825e5e-4554-4a57-940c-ac6386945b88",
      "m1": "یکی موبدی بود نامش همای",
      "m2": "هنرمند و بادانش و پاکرای",
      "verse_number": 62
    },
    {
      "id": "7ec74784-e98c-4a0a-bcc9-47098f63c4e9",
      "m1": "ورا برگزیدند ایرانیان",
      "m2": "که آن چاره را تنگ بندد میان",
      "verse_number": 63
    },
    {
      "id": "d918f39f-dd48-4345-9fa0-6db343bf1799",
      "m1": "نوشتند پس نامهای بندهوار",
      "m2": "از ایران به نزدیک آن شهریار",
      "verse_number": 64
    },
    {
      "id": "43cb949b-b8f6-4259-9b46-ea288cf79c94",
      "m1": "سرنامه گفتند ما بندهایم",
      "m2": "به فرمان و رایت سرافگندهایم",
      "verse_number": 65
    },
    {
      "id": "236942d8-4856-4e87-add7-591eb302aa5d",
      "m1": "ز چیزی که باشد به ایران زمین",
      "m2": "فرستیم نزدیک خاقان چین",
      "verse_number": 66
    },
    {
      "id": "4fec602c-5da1-4596-9d7b-3b853ddb1dbe",
      "m1": "همان نیز با هدیه و باژ و ساو",
      "m2": "که با جنگ ترکان نداریم تاو",
      "verse_number": 67
    },
    {
      "id": "ce5f3f8b-5750-4b77-9047-76213897547c",
      "m1": "بیامد ز ایران خجسته همای",
      "m2": "خود و نامداران پاکیزهرای",
      "verse_number": 68
    },
    {
      "id": "0ce08098-d59f-4fcd-98b8-6c8a116c49fd",
      "m1": "پیام بزرگان به خاقان بداد",
      "m2": "دل شاه ترکان بدان گشت شاد",
      "verse_number": 69
    },
    {
      "id": "58812884-56b9-4ae9-adda-6a0a1b730847",
      "m1": "وزان جستن تیز بهرامشاه",
      "m2": "گریزان بشد تازیان با سپاه",
      "verse_number": 70
    },
    {
      "id": "ee21107a-15bd-4875-b888-eb5baa946427",
      "m1": "به پیش گرانمایه خاقان بگفت",
      "m2": "دل و جان خاقان چو گل برشکفت",
      "verse_number": 71
    },
    {
      "id": "851e9a3d-bcb3-4b71-b075-2cbc4009af7d",
      "m1": "به ترکان چنین گفت خاقان چین",
      "m2": "که ما برنهادیم بر چرخ زین",
      "verse_number": 72
    },
    {
      "id": "6cb80676-4bad-4be9-be24-3c380ae1ec93",
      "m1": "که آورد بیجنگ ایران به چنگ",
      "m2": "مگر ما به رای و به هوش و درنگ",
      "verse_number": 73
    },
    {
      "id": "f4d2bcf7-3f20-4e1c-b53e-bb11f68e3717",
      "m1": "فرستاده را چیز بسیار داد",
      "m2": "درم داد چینی و دینار داد",
      "verse_number": 74
    },
    {
      "id": "26129f9d-af60-4c77-b52b-5b38755a2492",
      "m1": "یکی پاسخ نامه بنوشت و گفت",
      "m2": "که با جان پاکان خرد باد جفت",
      "verse_number": 75
    },
    {
      "id": "25f3b3fd-9bac-4498-8399-8da3e4627db5",
      "m1": "بدان بازگشتیم همداستان",
      "m2": "که گفت این فرستادهٔ راستان",
      "verse_number": 76
    },
    {
      "id": "bead2d79-d42c-4a53-8f63-f58700b1881e",
      "m1": "چو من با سپاه اندرآیم به مرو",
      "m2": "کنم روی کشور چو پر تذرو",
      "verse_number": 77
    },
    {
      "id": "27be9aa6-c90a-45aa-a6bf-3fcd6fd31366",
      "m1": "به رای و به داد و به رنگ و به بوی",
      "m2": "ابا آب شیر اندر آرم به جوی",
      "verse_number": 78
    },
    {
      "id": "724dbe98-5e9b-4696-8196-5914f7bdbdea",
      "m1": "بباشیم تا باژ ایران رسد",
      "m2": "همان هدیه و ساو شیران رسد",
      "verse_number": 79
    },
    {
      "id": "5253be75-287f-41a6-98ca-5b5ff51949bc",
      "m1": "به مرو آیم و زاستر نگذرم",
      "m2": "نخواهم که رنج آید از لشکرم",
      "verse_number": 80
    },
    {
      "id": "6414e461-b545-4b8d-b07d-43d23a943428",
      "m1": "فرستاده تازان به ایران رسید",
      "m2": "ز خاقان بگفت آنچ دید و شنید",
      "verse_number": 81
    },
    {
      "id": "13427692-7163-428c-8d87-2e13741a05b8",
      "m1": "به مرو اندر آورد خاقان سپاه",
      "m2": "جهان شد ز گرد سواران سیاه",
      "verse_number": 82
    },
    {
      "id": "3db60b53-3824-48e4-931b-c81ff5d54895",
      "m1": "چو آسوده شد سر بخوردن نهاد",
      "m2": "کسی را نیامد ز بهرام یاد",
      "verse_number": 83
    },
    {
      "id": "348bdfa2-1f79-4b00-86a3-bcb9f8466b39",
      "m1": "به مرو اندرون بانگ چنگ و رباب",
      "m2": "کسی را نبد جای آرام و خواب",
      "verse_number": 84
    },
    {
      "id": "06c53777-c7c7-41c9-80e0-651a8598c721",
      "m1": "سپاهش همه باره کرده یله",
      "m2": "طلایه نه بردشت و نه راحله",
      "verse_number": 85
    },
    {
      "id": "50a2752e-8bf4-465f-9690-381fd4620cbd",
      "m1": "شکار و می و مجلس و بانگ چنگ",
      "m2": "شب و روز ایمن نشسته ز جنگ",
      "verse_number": 86
    },
    {
      "id": "c06bb486-b6d6-4db2-a0c0-ccc0bbcecf43",
      "m1": "همی باژ ایرانیان چشم داشت",
      "m2": "ز دیر آمدن دل پر از خشم داشت",
      "verse_number": 87
    }
  ],
