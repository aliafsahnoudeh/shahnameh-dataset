{
  "id": "79770ffe-5020-4870-9555-dfdb9bc52ac4",
  "title": "بخش ۱۸",
  "verses": [
    {
      "id": "d6fc4303-41e0-48cc-b4c6-514d60af7493",
      "m1": "دگر هفته تنها به نخچیر شد",
      "m2": "دژم بود با ترکش و تیر شد",
      "verse_number": 1
    },
    {
      "id": "8df66ed9-5847-4bdd-8149-cc6400fb7076",
      "m1": "ز خورشید تابنده شد دشت گرم",
      "m2": "سپهبد ز نخچیر برگشت نرم",
      "verse_number": 2
    },
    {
      "id": "892fefde-8739-4627-93cc-7433add5fddf",
      "m1": "سوی کاخ بازارگانی رسید",
      "m2": "به هر سو نگه کرد و کس را ندید",
      "verse_number": 3
    },
    {
      "id": "4f9ab37c-5044-4e92-9fc4-323612a0b51e",
      "m1": "ببازارگان گفت ما را سپنج",
      "m2": "توان داد کز ما نبینی تو رنج",
      "verse_number": 4
    },
    {
      "id": "7ea0ef7d-aaf5-4824-a788-e2085809c1eb",
      "m1": "چو بازارگانش فرود آورید",
      "m2": "مر او را یکی خوابگه برگزید",
      "verse_number": 5
    },
    {
      "id": "cf55d794-6cdd-49c8-a7d6-c8667055399d",
      "m1": "همی بود نالان ز درد شکم",
      "m2": "به بازارگان داد لختی درم",
      "verse_number": 6
    },
    {
      "id": "e4e2fefa-159a-4786-951e-de7aff54816c",
      "m1": "بدو گفت لختی نبید کهن",
      "m2": "ابا مغز بادام بریان بکن",
      "verse_number": 7
    },
    {
      "id": "d2e48550-4adb-4135-857d-17dc21927de7",
      "m1": "اگر خانگی مرغ باشد رواست",
      "m2": "کزین آرزوها دلم را هواست",
      "verse_number": 8
    },
    {
      "id": "ca14de6c-55b3-4370-82f9-05e95a911ec9",
      "m1": "نیاورد بازارگان آنچ گفت",
      "m2": "نبد مغز بادامش اندر نهفت",
      "verse_number": 9
    },
    {
      "id": "ae17d31d-9b57-4c35-b4a2-cd2ea5e2b69c",
      "m1": "چو تاریک شد میزبان رفت نرم",
      "m2": "یکی مرغ بریان بیاورد گرم",
      "verse_number": 10
    },
    {
      "id": "4904e36a-e4d6-40d3-9e7c-47cc7e03908a",
      "m1": "بیاراست خوان پیش بهرام برد",
      "m2": "به بازارگان گفت بهرام گرد",
      "verse_number": 11
    },
    {
      "id": "df5f9bd5-ef26-4c67-a088-e539c4788fea",
      "m1": "که از تو نبید کهن خواستم",
      "m2": "زبان را به خواهش بیاراستم",
      "verse_number": 12
    },
    {
      "id": "dd426de3-161d-4682-a766-06a9f574253e",
      "m1": "نیاوردی و داده بودم درم",
      "m2": "که نالنده بودم ز درد شکم",
      "verse_number": 13
    },
    {
      "id": "173d4a14-d129-4c7c-b094-7238d18c86eb",
      "m1": "چنین داد پاسخ که ای بیخرد",
      "m2": "نداری خرد کو روان پرورد",
      "verse_number": 14
    },
    {
      "id": "13f34587-cfd4-4aa9-9592-1ad4a73fe68d",
      "m1": "چو آوردم این مرغ بریان گرم",
      "m2": "فزون خواستن نیست آیین و شرم",
      "verse_number": 15
    },
    {
      "id": "9ebd6bb3-8e5f-4fea-ac9f-56cede532928",
      "m1": "چو بشنید بهرام زو این سخن",
      "m2": "بشد آرزوی نبید کهن",
      "verse_number": 16
    },
    {
      "id": "4d90aa6f-4f05-4f21-b45f-57e1294cb77d",
      "m1": "پشیمان شد از گفت خود نان بخورد",
      "m2": "برو نیز یاد گذشته نکرد",
      "verse_number": 17
    },
    {
      "id": "fc752d9c-c392-46b9-82cb-297c7b0700d4",
      "m1": "چو هنگامهٔ خوابش آمد بخفت",
      "m2": "به بازارگان نیز چیزی نگفت",
      "verse_number": 18
    },
    {
      "id": "ea5692da-2be1-4434-bf03-2b19e43805da",
      "m1": "ز دریای جوشان چو خور بردمید",
      "m2": "شد آن چادر قیرگون ناپدید",
      "verse_number": 19
    },
    {
      "id": "3a788069-c2c7-4625-b58a-843e4763841a",
      "m1": "همی گفت پرمایه بازارگان",
      "m2": "به شاگرد کای مرد ناکاردان",
      "verse_number": 20
    },
    {
      "id": "1835f454-ab88-4aff-90e4-c1362a21657e",
      "m1": "مران مرغ کارزش نبد یک درم",
      "m2": "خریدی به افزون و کردی ستم",
      "verse_number": 21
    },
    {
      "id": "ae2b7355-e4cc-43cb-8bc7-c008ca9972d6",
      "m1": "گر ارزان خریدی ابا این سوار",
      "m2": "نبودی مرا تیره شب کارزار",
      "verse_number": 22
    },
    {
      "id": "9913fbad-eabe-4bc6-9946-662f633aa227",
      "m1": "خریدی مر او را به دانگی پنیر",
      "m2": "بدی با من امروز چون آب و شیر",
      "verse_number": 23
    },
    {
      "id": "c6e19c73-fd15-49fa-addf-d1011d1e6ae4",
      "m1": "بدو گفت اگر این نه کار منست",
      "m2": "چنان دان که مرغ از شمار منست",
      "verse_number": 24
    },
    {
      "id": "68f45efc-9d22-490d-90cb-da48b04b06eb",
      "m1": "تو مهمان من باش با این سوار",
      "m2": "بدین مرغ با من مکن کارزار",
      "verse_number": 25
    },
    {
      "id": "7a6423cc-990a-4570-adc0-e68ef281fba2",
      "m1": "چو بهرام برخاست از خواب خوش",
      "m2": "بشد نزد آن بارهٔ دستکش",
      "verse_number": 26
    },
    {
      "id": "86584a60-0e0d-4f1b-abf6-55f40f019cd0",
      "m1": "که زین برنهد تا به ایوان شود",
      "m2": "کلاهش ز ایوان به کیوان شود",
      "verse_number": 27
    },
    {
      "id": "ab3876c3-7df8-4eba-8439-598ea0d3a7e9",
      "m1": "چو شاگرد دیدش به بهرام گفت",
      "m2": "که امروز با من به بد باش جفت",
      "verse_number": 28
    },
    {
      "id": "f4de8123-e1a7-4cd7-8c27-313541d7db35",
      "m1": "بشد شاه و بنشست بر تخت اوی",
      "m2": "شگفتی فروماند از بخت اوی",
      "verse_number": 29
    },
    {
      "id": "86f026d5-aeb0-4257-a120-2366c6d47cbf",
      "m1": "جوان رفت و آورد خایه دویست",
      "m2": "به استاد گفت ای گرامی مهایست",
      "verse_number": 30
    },
    {
      "id": "49c367c2-e692-4628-891e-79b209538dcf",
      "m1": "یکی مرغ بریان با نان گرم",
      "m2": "نبید کهن آر و بادام نرم",
      "verse_number": 31
    },
    {
      "id": "8887d07c-6be6-45e2-ac88-1e13dc3b0f32",
      "m1": "بشد نزد بهرام گفت ای سوار",
      "m2": "همی خایه کردی تو دی خواستار",
      "verse_number": 32
    },
    {
      "id": "8bdeb220-a5b4-4708-b77b-5639a5ad6005",
      "m1": "کنون آرزوها بیاریم گرم",
      "m2": "هم از چندگونه خورشهای نرم",
      "verse_number": 33
    },
    {
      "id": "8046d0e8-d90d-4296-939e-a6d4dbae4743",
      "m1": "بگفت این و زان پس به بازار شد",
      "m2": "به ساز دگرگون خریدار شد",
      "verse_number": 34
    },
    {
      "id": "3982b4f4-7739-4b5c-aada-b71bc8882970",
      "m1": "شکر جست و بادام و مرغ و بره",
      "m2": "که آرایش خوان کند یکسره",
      "verse_number": 35
    },
    {
      "id": "1b3001b1-563f-4a04-8191-7dca600dc630",
      "m1": "می و زعفران برد و مشک و گلاب",
      "m2": "سوی خانه شد با دلی پرشتاب",
      "verse_number": 36
    },
    {
      "id": "6165b2e7-474e-4342-ab74-afd3ac601981",
      "m1": "بیاورد خوان با خورشهای نغز",
      "m2": "جوان بر منش بود و پاکیزهمغز",
      "verse_number": 37
    },
    {
      "id": "b559bca1-f4a2-498b-860f-e87f5760f4e6",
      "m1": "چو نان خورده شد جام پر میببرد",
      "m2": "نخستنی به بهرام خسرو سپرد",
      "verse_number": 38
    },
    {
      "id": "366384de-379c-4a95-95a0-0bc507227917",
      "m1": "بدینگونه تا شاد و خرم شدند",
      "m2": "ز خردک به جام دمادم شدند",
      "verse_number": 39
    },
    {
      "id": "de6e5c84-1b58-4491-890d-62ae09e642ae",
      "m1": "چنین گفت با میزبان شهریار",
      "m2": "که بهرام ما را کند خواستار",
      "verse_number": 40
    },
    {
      "id": "6f36bc79-5d22-4705-953f-5098c4d8fdee",
      "m1": "شما می گسارید و مستان شوید",
      "m2": "مجنبید تا می پرستان شوید",
      "verse_number": 41
    },
    {
      "id": "4905a06e-8317-487a-b856-cf45d51c0bb0",
      "m1": "بمالید پس باره را زین نهاد",
      "m2": "سوی گلشن آمد ز می گشته شاد",
      "verse_number": 42
    },
    {
      "id": "354820b1-48e3-43ce-8019-3fdf5ffe9e02",
      "m1": "به بازارگان گفت چندین مکوش",
      "m2": "از افزونی این مرد ارزان فروش",
      "verse_number": 43
    },
    {
      "id": "f52b9da7-7375-4f70-a3f3-7858246eba2c",
      "m1": "به دانگی مرا دوش بفروختی",
      "m2": "همی چشم شاگرد را دوختی",
      "verse_number": 44
    },
    {
      "id": "c52dbd3a-7a49-4e2b-8a8b-3854996d5cce",
      "m1": "که مرغی خریدی فزون از بها",
      "m2": "نهادی مرا در دم اژدها",
      "verse_number": 45
    },
    {
      "id": "4a93403b-d027-4537-aadb-cf2c0eb27f2e",
      "m1": "بگفت این به بازارگان و برفت",
      "m2": "سوی گاه شاهی خرامید تفت",
      "verse_number": 46
    },
    {
      "id": "17cf3cfe-cd51-48a6-9e89-44cef5fe52d8",
      "m1": "چو خورشید بر تخت بنمود تاج",
      "m2": "جهانبان نشست از بر تخت عاج",
      "verse_number": 47
    },
    {
      "id": "52f085cc-f3c9-4a1c-a54e-dbdfbe175d0b",
      "m1": "بفرمود خسرو به سالار بار",
      "m2": "که بازارگان را کند خواستار",
      "verse_number": 48
    },
    {
      "id": "5b174841-b0a9-4d01-ab67-9ee2453cc14c",
      "m1": "بیارند شاگرد با او بهم",
      "m2": "یکی شاد ازیشان و دیگر دژم",
      "verse_number": 49
    },
    {
      "id": "ca72ad89-c8b3-495c-813e-2d325fdc4599",
      "m1": "چو شاگرد و استاد رفتند زود",
      "m2": "به پیش شهنشاه ایران چو دود",
      "verse_number": 50
    },
    {
      "id": "b2f3e0dc-f546-4eed-88a3-65c75eee9d95",
      "m1": "چو شاگرد را دید بنواختش",
      "m2": "بر مهتران شاد بنشاختش",
      "verse_number": 51
    },
    {
      "id": "0a1ec75f-fc1d-4f18-8b58-494f8995d334",
      "m1": "یکی بدره بردند نزدیک اوی",
      "m2": "که چون ماه شد جان تاریک اوی",
      "verse_number": 52
    },
    {
      "id": "e90b3065-00f8-4ef3-8774-76008086f03e",
      "m1": "به بازارگان گفت تا زندهای",
      "m2": "چنان دان که شاگرد را بندهای",
      "verse_number": 53
    },
    {
      "id": "45240cea-9152-485d-b033-614d9748c3e0",
      "m1": "همان نیز هر ماهیانی دوبار",
      "m2": "درم شست گنجی بروبر شمار",
      "verse_number": 54
    },
    {
      "id": "17fbae7b-b91b-4e61-b39d-449d9dff24a1",
      "m1": "به چیز تو شاگرد مهمان کند",
      "m2": "دل مرد آزاده خندان کند",
      "verse_number": 55
    },
    {
      "id": "f4d5b111-1522-4292-bd7c-90c37bdd1c15",
      "m1": "به موبد چنین گفت زان پس که شاه",
      "m2": "چو کار جهان را ندارد نگاه",
      "verse_number": 56
    },
    {
      "id": "267e8866-9c15-4ebc-acef-c617ffb0b47b",
      "m1": "چه داند که مردم کدامست به",
      "m2": "چگونه شناسد کهان را ز مه",
      "verse_number": 57
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 57
  }
}