{
  "id": "fb4c3758-a731-458f-9fdf-02e9363367af",
  "title": "بخش ۲",
  "verses": [
    {
      "id": "6e66b223-57aa-4fde-8840-60ed758e1326",
      "m1": "دگر روز چون بردمید آفتاب",
      "m2": "ببالید کوه و بپالود خواب",
      "verse_number": 1
    },
    {
      "id": "71e6fa52-97a9-4a6e-a4a2-8d9c89b619db",
      "m1": "به نزدیک منذر شدند این گروه",
      "m2": "که بهرام شه بود زیشان ستوه",
      "verse_number": 2
    },
    {
      "id": "f85e5ce9-0757-4cc1-beb0-531c31aac8a5",
      "m1": "که خواهشگری کن به نزدیک شاه",
      "m2": "ز کردار ما تا ببخشد گناه",
      "verse_number": 3
    },
    {
      "id": "fdde818a-790c-415b-8088-3ac45481ecee",
      "m1": "که چونان بدیم از بد یزدگرد",
      "m2": "که خون در تن نامداران فسرد",
      "verse_number": 4
    },
    {
      "id": "88fb5719-3517-4507-8fef-c74bccd9bfdd",
      "m1": "ز بس زشت گفتار و کردار اوی",
      "m2": "ز بیدادی و درد و آزار اوی",
      "verse_number": 5
    },
    {
      "id": "301e7038-59fa-4a6b-8922-caf5aef55789",
      "m1": "دل ما به بهرام ازان بود سرد",
      "m2": "که از شاه بودیم یکسر به درد",
      "verse_number": 6
    },
    {
      "id": "823b545c-4749-4125-bdef-92b412142638",
      "m1": "بشد منذر و شاه را کرد نرم",
      "m2": "بگسترد پیشش سخنهای گرم",
      "verse_number": 7
    },
    {
      "id": "4772620e-d145-459e-a4b6-1193da8c86a7",
      "m1": "ببخشید اگر چندشان بُد گناه",
      "m2": "که با گوهر و دادگر بود شاه",
      "verse_number": 8
    },
    {
      "id": "1adb300c-853a-49cb-a0b9-f90b67ea26b1",
      "m1": "بیاراست ایوان شاهنشهی",
      "m2": "برفت آنک بودند یکسر مهی",
      "verse_number": 9
    },
    {
      "id": "d3b6687b-4c5b-47de-9b45-7b7c3531a00f",
      "m1": "چو جای بزرگی بپرداختند",
      "m2": "کرا بود شایسته بنشاختند",
      "verse_number": 10
    },
    {
      "id": "30e6029f-979d-4b0f-80da-f7a9422936ee",
      "m1": "به هر جای خوانی بیاراستند",
      "m2": "می و رود و رامشگران خواستند",
      "verse_number": 11
    },
    {
      "id": "6c1e6ef3-1797-4698-aebf-dcb1dd3541b9",
      "m1": "دوم روز رفتند دیگر گروه",
      "m2": "سپهبد نیامد ز خوردن ستوه",
      "verse_number": 12
    },
    {
      "id": "a2e0ac02-1cd5-4274-891a-12ee6ff10a1a",
      "m1": "سیم روز جشن و می و سور بود",
      "m2": "غم از کاخ شاه جهان دور بود",
      "verse_number": 13
    },
    {
      "id": "c7e51d22-9b52-468f-999d-2d31a8ae9448",
      "m1": "بگفت آنک نعمان و منذر چه کرد",
      "m2": "ز بهر من این پاکزاده دو مرد",
      "verse_number": 14
    },
    {
      "id": "da42827c-a410-41fc-a6b8-75a29dfa12fc",
      "m1": "همه مهتران خواندند آفرین",
      "m2": "بران دشت آباد و مردان کین",
      "verse_number": 15
    },
    {
      "id": "e7d9c94d-d8ba-4304-8459-7f48788d0683",
      "m1": "ازان پس در گنج بگشاد شاه",
      "m2": "به دینار و دیبا بیاراست گاه",
      "verse_number": 16
    },
    {
      "id": "bcd4b144-6f7b-45ef-b628-a363b9d7c129",
      "m1": "به اسپ و سنان و به خفتان جنگ",
      "m2": "ز خود و ز هر گوهری رنگرنگ",
      "verse_number": 17
    },
    {
      "id": "57097954-5e57-4e79-8522-28a72c6f90f3",
      "m1": "سراسر به نعمان و منذر سپرد",
      "m2": "جوانوی رفت آن بدیشان شمرد",
      "verse_number": 18
    },
    {
      "id": "d5624e2d-95bc-4727-93cd-a4c58a39ef93",
      "m1": "کس اندازهٔ بخشش او نداشت",
      "m2": "همان تاو با کوشش او نداشت",
      "verse_number": 19
    },
    {
      "id": "82d08799-129f-423a-a733-913f6ab0081d",
      "m1": "همان تازیان را بسی هدیه داد",
      "m2": "از ایوان شاهی برفتند شاد",
      "verse_number": 20
    },
    {
      "id": "71304e07-dff2-4352-b210-5e5e99d9e0f3",
      "m1": "بیاورد پس خلعت خسروی",
      "m2": "همان اسپ و هم جامهٔ پهلوی",
      "verse_number": 21
    },
    {
      "id": "ca5f599c-e68d-47cb-9d32-a1553a9cbdb8",
      "m1": "به خسرو سپردند و بنواختش",
      "m2": "بر گاه فرخنده بنشاختش",
      "verse_number": 22
    },
    {
      "id": "ff8b5537-f02d-47fc-8196-3fa8f3912831",
      "m1": "شهنشاه خسرو به نرسی رسید",
      "m2": "ز تخت اندر آمد به کرسی رسید",
      "verse_number": 23
    },
    {
      "id": "1c7d10e3-cd6f-4cf7-8d41-43fe0d0a7312",
      "m1": "برادرش بد یکدل و یکزبان",
      "m2": "ازو کهتر آن نامدار جوان",
      "verse_number": 24
    },
    {
      "id": "9c37c0b5-47d5-431a-a9e2-3762bfd1df2e",
      "m1": "ورا پهلوان کرد بر لشکرش",
      "m2": "بدان تا به آیین بود کشورش",
      "verse_number": 25
    },
    {
      "id": "dc2820ca-6e1d-4691-9ba5-73c66560e008",
      "m1": "سپه را سراسر به نرسی سپرد",
      "m2": "به بخشش همی پادشاهی ببرد",
      "verse_number": 26
    },
    {
      "id": "756bbf31-e07c-463c-bae4-d497e818f993",
      "m1": "در گنج بگشاد و روزی بداد",
      "m2": "سپاهش به دینار گشتند شاد",
      "verse_number": 27
    },
    {
      "id": "0c97d746-fe35-47cf-9ad1-63e3479fb614",
      "m1": "بفرمود پس تا گشسپ دبیر",
      "m2": "بیامد بر شاه مردم پذیر",
      "verse_number": 28
    },
    {
      "id": "7cc993f8-b60f-4f8f-85b6-1c3a7c9af7f0",
      "m1": "کجا بود دانا بدان روزگار",
      "m2": "شمار جهان داشت اندر کنار",
      "verse_number": 29
    },
    {
      "id": "6749c7fb-c1bc-4412-9b18-e28ef6e5e140",
      "m1": "جوانوی بیدار با او بهم",
      "m2": "که نزدیک او بد شمار درم",
      "verse_number": 30
    },
    {
      "id": "519a202f-0741-4b77-91f7-71698245686c",
      "m1": "ز باقی که بد نزد ایرانیان",
      "m2": "بفرمود تا بگسلد از میان",
      "verse_number": 31
    },
    {
      "id": "8cafd55c-6df5-441a-93cf-af1923c904c5",
      "m1": "دبیران دانا به دیوان شدند",
      "m2": "ز بهر درم پیش کیوان شدند",
      "verse_number": 32
    },
    {
      "id": "abc0fb5f-34de-4727-bec1-50658819e91c",
      "m1": "ز باقی که بد بر جهان سربسر",
      "m2": "همه برگرفتند یک با دگر",
      "verse_number": 33
    },
    {
      "id": "bc320fe6-e952-4ce4-9851-fc7562b66dab",
      "m1": "نود بار و سه بار کرده شمار",
      "m2": "به ایران درم بد هزاران هزار",
      "verse_number": 34
    },
    {
      "id": "7ac1cb2c-7b8f-4f6f-9bf5-abc1b935abf7",
      "m1": "ببخشید و دیوان بر آتش نهاد",
      "m2": "همه شهر ایران بدو گشت شاد",
      "verse_number": 35
    },
    {
      "id": "03a497fe-bb78-4399-8f3f-cc157fd90ca8",
      "m1": "چو آگاه شد زان سخن هرکسی",
      "m2": "همی آفرین خواند هرکس بسی",
      "verse_number": 36
    },
    {
      "id": "99fbe643-7dc8-47e4-bcd7-8c0ec7a0c530",
      "m1": "برفتند یکسر به آتشکده",
      "m2": "به ایوان نوروز و جشن سده",
      "verse_number": 37
    },
    {
      "id": "ea637183-edd0-4104-8a66-71f999ffa93a",
      "m1": "همی مشک بر آتش افشاندند",
      "m2": "به بهرام بر آفرین خواندند",
      "verse_number": 38
    },
    {
      "id": "e38a2e8e-a2f5-456e-bb02-83de6210fa2b",
      "m1": "وزان پس بفرمود کارآگهان",
      "m2": "یکی تا بگردند گرد جهان",
      "verse_number": 39
    },
    {
      "id": "03d46426-2123-4edd-8b6f-4b5e21778d11",
      "m1": "کسی را کجا رانده بد یزدگرد",
      "m2": "بجست و به یک شهرشان کرد گرد",
      "verse_number": 40
    },
    {
      "id": "288d13dd-b774-4783-8c99-68553a8aeacc",
      "m1": "بدان تا شود نامهٔ شهریار",
      "m2": "که آزادگان را کند خواستار",
      "verse_number": 41
    },
    {
      "id": "4c57ce30-f4d7-4ba8-89f8-3e73cdf535f0",
      "m1": "فرستاد خلعت به هر مهتری",
      "m2": "ببخشید به اندازهشان کشوری",
      "verse_number": 42
    },
    {
      "id": "c5414301-c121-4c31-872a-0d2a80680a0d",
      "m1": "رد و موبد و مرزبان هرک بود",
      "m2": "که آواز بهرام زان سان شنود",
      "verse_number": 43
    },
    {
      "id": "8e9d1bd5-afda-41be-b120-99349911838a",
      "m1": "سراسر به درگاه شاه آمدند",
      "m2": "گشادهدل و نیکخواه آمدند",
      "verse_number": 44
    },
    {
      "id": "fe4ab832-e466-4c3e-9981-0d8b7af36d34",
      "m1": "بفرمود تا هرک بد دادجوی",
      "m2": "سوی موبد موبد آورد روی",
      "verse_number": 45
    },
    {
      "id": "5ac0e627-dd8e-4096-b939-1f5dbb48a28d",
      "m1": "چو فرمانش آمد ز گیتی به جای",
      "m2": "منادیگری کرد بر در به پای",
      "verse_number": 46
    },
    {
      "id": "01c03d9f-b502-4e37-b581-e6c30d7cf671",
      "m1": "که ای زیردستان بیدار شاه",
      "m2": "ز غم دور باشید و دور از گناه",
      "verse_number": 47
    },
    {
      "id": "060bf1b3-d5ed-45f6-9202-ea2ad9bc8bd3",
      "m1": "وزین پس بران کس کنید آفرین",
      "m2": "که از داد آباد دارد زمین",
      "verse_number": 48
    },
    {
      "id": "e5c9d3ae-236a-42c7-bc8c-a447500ce203",
      "m1": "ز گیتی به یزدان پناهید و بس",
      "m2": "که دارنده اویست و فریادرس",
      "verse_number": 49
    },
    {
      "id": "7c424764-ce3a-4a0f-b830-755e84793aba",
      "m1": "هرانکس که بگزید فرمان ما",
      "m2": "نپیچد سر از رای و پیمان ما",
      "verse_number": 50
    },
    {
      "id": "688638c8-f463-442e-8243-4c0ebe5a28b0",
      "m1": "برو نیکویها برافزون کنیم",
      "m2": "ز دل کینه و آز بیرون کنیم",
      "verse_number": 51
    },
    {
      "id": "5d08758e-fad6-471a-82b5-1eac0f1724b0",
      "m1": "هرانکس که از داد بگریزد اوی",
      "m2": "به بادآفره در بیاویزد اوی",
      "verse_number": 52
    },
    {
      "id": "2b110534-bb70-452a-8064-449e11004b04",
      "m1": "گر ایدونک نیرو دهد کردگار",
      "m2": "به کام دل ما شود روزگار",
      "verse_number": 53
    },
    {
      "id": "84c8de98-a294-43b3-ae66-adc59bc63091",
      "m1": "برین نیکویها فزایش بود",
      "m2": "شما را بر ما ستایش بود",
      "verse_number": 54
    },
    {
      "id": "4698c16d-8f31-42f4-bb00-6ed872eee608",
      "m1": "همه شهر ایران به گفتار اوی",
      "m2": "برفتند شاداندل و تازهروی",
      "verse_number": 55
    },
    {
      "id": "79d6ab61-8d1c-4630-bc77-a4805ebb06f4",
      "m1": "بدانگه که شد پادشاهیش راست",
      "m2": "فزون گشت شادی و انده بکاست",
      "verse_number": 56
    },
    {
      "id": "6155838c-3f2a-4530-851c-675f646e1f90",
      "m1": "همه روز نخچیر بد کار اوی",
      "m2": "دگر اسپ و میدان و چوگان و گوی",
      "verse_number": 57
    }
  ],
  "poem_info": {
    "meter": "فعولن فعولن فعولن فعل (متقارب مثمن محذوف یا وزن شاهنامه)",
    "poeticForm": "مثنوی",
    "verseCount": 57
  },
